            });
        }
    };
}]);

app.directive('advansedDnsSetForm', [function () {
    return {
        link: function (scope, element, attr) {
            var correctScope = (scope.$parent.listItem) ? scope.$parent.listItem : scope.listItem;
            var formPath = attr.advansedDnsSetForm;
            correctScope[formPath + "Name"] = attr.name;
            correctScope[formPath + "Form"] = scope[attr.name];
            if (correctScope.editModel) {
                correctScope.editModel[formPath + "Form"] = scope[attr.name];
            }
        }
    };
}]);
;
app.directive('tldCustomContactInfo', [
	'httpService', '$compile', '$templateCache', '$timeout', function (httpService, $compile, $templateCache, $timeout) {
		return {
			restrict: 'E',
			replace: true,
			scope: {
				tldItem: '=tldItem'
			},

			link: function postLink(scope, element) {
				var setTemplate = function (tmpHtml) {
					element.replaceWith($compile(tmpHtml)(scope));
					scope.$broadcast("InitExtendedAttributes", scope.tldItem);
				}
				if (scope.tldItem.attributes.TldName != null) {
					var tldName = scope.tldItem.attributes.TldName.toLowerCase();
					var template= $templateCache.get(tldName + '_AlternativeContact.html', '/Profile/Tools/DomainContacts/Tld/ExtendedAttributes/Templates/')
					if (template.then) {
						template.then(function(result) {
							if (result.fromCache != null) {
								setTemplate(result.fromCache);
							} else {
								var allTemplates = angular.element(result.data);
								for (var tmpIndex = 0; tmpIndex < allTemplates.length; tmpIndex++) {
									var template = angular.element(allTemplates[tmpIndex]);
									var useFor = template.attr('data-use-for');
									if (useFor != null && useFor.indexOf(tldName) != -1) {
										setTemplate($templateCache.get(template.attr('id')));
										break;
									}
								}
							}
						});
					} else {
						$timeout(function() {
							setTemplate(template);
						});
					}
				}
			}
		};
	}
]);

app.directive('contactsInfoItem', [
	'$modal', '$compile', '$templateCache', '$rootScope', 'httpRepository', 'ncGridEmitPropertyScopeSearch', '$timeout', function($modal, $compile, $templateCache, $rootScope, httpRepository, ncGridEmitPropertyScopeSearch, $timeout) {
		return {
			restrict: 'E',
			replace: true,
			scope: {
				contact: '=contact',
				contacts: '=contacts'
			},
			link: function(scope, element, attrs) {
				scope.dropDownContactType = {
					None: 0,
					Profile: 1,
					Default: 2,
					Custom: 3,
					CreateNew: 4
				}
				scope.getCountryByCode = function(code) {
					return $rootScope.getCountryByCode(code);
				}
				var checkAvailableDownContactType= function(senderEvent) {
					if (senderEvent != null &&
							(!scope.domainContactsParameters.HasPrimary && scope.contact.ContactInfoType.toString() == scope.dropDownContactType.Profile.toString() ||
							!scope.domainContactsParameters.HasDefault && scope.contact.ContactInfoType.toString() == scope.dropDownContactType.Default.toString() ||
							!scope.domainContactsParameters.HasCustom && scope.contact.ContactInfoType.toString() == scope.dropDownContactType.Custom.toString())) {
						scope.contact.ContactInfoType = scope.dropDownContactType.None;
					}
				}

				$rootScope.$watch('domainContactsParameters', function(newValue, oldValue) {
					if (newValue != null) {
						scope.domainContactsParameters = $rootScope.domainContactsParameters;
						checkAvailableDownContactType(scope.contact);
					}
				});

				scope.$watch('contact', function(newValue, oldValue) {
				    if (newValue != null) {
				        if (scope.contacts != null) {
				            scope.form = scope.contacts.form;
				        }

						checkAvailableDownContactType(scope.domainContactsParameters);
						if (scope.contact.ContactInfoType != scope.dropDownContactType.Custom) {
							scope.contact.CustomAddressId = null;
						}
						var prevContactType = scope.contact.ContactInfoType;
						var prevCustomAddressId = scope.contact.CustomAddressId;
						$rootScope.$watch('customContacts', function(newCustomContacts, oldCustomContacts) {
							scope.customContacts = $rootScope.customContacts;
							if (scope.contact.CustomAddressId != null) {
								$timeout(function() {
									scope.contact.CustomAddressId = scope.contact.CustomAddressId.toString();
								});
							}
						});


						var getRegistrantInfo = function(addressId) {
							for (var i = 0; i < scope.customContacts.length; i++) {
								if (addressId == scope.customContacts[i].Id) {
									if (scope.customContacts[i].RegistrantInfo == null) {
										httpRepository.userContacts.getCustomContactInfo(addressId).then(function(result) {
											scope.contact.RegistrantInfo = result.Result;
										});
									} else {
										scope.contact.RegistrantInfo = scope.customContacts[i].RegistrantInfo;
									}
									break;
								}
							}
						}
						scope.contact.setCustom = function(addressId, registrantInfo) {
							scope.contact.ContactInfoType = scope.dropDownContactType.Custom;
							prevCustomAddressId = scope.contact.CustomAddressId;
							prevContactType = scope.contact.ContactInfoType;
							if (scope.contact.RegistrantInfo != null) {
								scope.contact.RegistrantInfo = registrantInfo;
							}
							$timeout(function() {
								scope.contact.CustomAddressId = addressId.toString();
							}, 0);
						}
						$rootScope.$on('updateFefaultAddressInfo', function() {
							if (scope.contact.ContactInfoType == scope.dropDownContactType.Default && scope.contact.RegistrantInfo != null) {
								scope.contact.RegistrantInfo = $rootScope.defaultAddressInfo;
							}
						});

						scope.onChangeContactType = function() {
							if (scope.contact.ContactInfoType != prevContactType) {
								if (scope.contact.ContactInfoType != "3") {
									scope.contact.CustomAddressId = null;
								}
								scope.contact.RegistrantInfo = null;
								if (scope.contact.ContactInfoType == scope.dropDownContactType.CreateNew) {
									var createNewAddress = $modal.open({
										templateUrl: "/Profile/Tools/CreateNewContactModal/Get",
										controller: 'createNewContactModalCtrl',
										size: 'lg',
										backdrop: 'static',
										keyboard: false,
										resolve: {
											modalInteraction: function() {
												return {
													contactType: scope.contact.contactType,
												};
											}
										}
									});
									createNewAddress.result.then(function(result) {
										var address = {
											AddressName: result.modalEntity.addressName,
											Id: result.savedEntity.ContactId,
											IsDefault: result.savedEntity.IsDefault,
											RegistrantInfo: result.savedEntity
										};
										if (result.modalEntity.isUseForRegistrant) {
											scope.contacts.Registrant.setCustom(address.Id, address.RegistrantInfo);
										}
										if (result.modalEntity.isUseForAdministrative) {
											scope.contacts.Admin.setCustom(address.Id, address.RegistrantInfo);
										}
										if (result.modalEntity.isUseForTechnical) {
											scope.contacts.Tech.setCustom(address.Id, address.RegistrantInfo);
										}
										if (result.modalEntity.isUseForAuxBilling) {
											scope.contacts.Billing.setCustom(address.Id, address.RegistrantInfo);
										}
										if (result.modalEntity.isDefault) {
											$rootScope.domainContactsParameters.HasDefault = true;
											$rootScope.defaultAddressInfo = address.RegistrantInfo;
											scope.$emit('updateFefaultAddressInfo');
										}
										scope.customContacts.push(address);
										scope.contact.RegistrantInfo = address.RegistrantInfo;
										scope.contact.ContactInfoType = scope.dropDownContactType.Custom;
										prevCustomAddressId = scope.contact.CustomAddressId;
										prevContactType = scope.contact.ContactInfoType;
										$rootScope.domainContactsParameters.HasCustom = true;

										var pageScope = ncGridEmitPropertyScopeSearch(scope, 'pageNotification');
									    pageScope.pageNotification.alerts.clear();
									    pageScope.pageNotification.alerts.addSuccess("Contact details have been saved to address book.", { hasClose: true, isAutoHide: true });

										$timeout(function() {
											scope.contact.CustomAddressId = address.Id.toString();
										}, 0);

									}, function() {
										scope.contact.ContactInfoType = prevContactType;
										scope.contact.CustomAddressId = prevCustomAddressId;
									});
								} else {
									prevContactType = scope.contact.ContactInfoType;
									if (scope.dropDownContactType.Profile == scope.contact.ContactInfoType) {
										if ($rootScope.primaryAddressInfo == null) {
											httpRepository.userContacts.getProfile().then(function(result) {
												$rootScope.primaryAddressInfo = result.Result;
												scope.contact.RegistrantInfo = $rootScope.primaryAddressInfo;
											});
										}
										scope.contact.RegistrantInfo = $rootScope.primaryAddressInfo;
									}
									if (scope.dropDownContactType.Default == scope.contact.ContactInfoType) {
										if ($rootScope.defaultAddressInfo == null) {
											httpRepository.userContacts.getDefault().then(function(result) {
												$rootScope.defaultAddressInfo = result.Result;
												scope.contact.RegistrantInfo = $rootScope.defaultAddressInfo;
											});
										}
										scope.contact.RegistrantInfo = $rootScope.defaultAddressInfo;
									}
								}
							}
						}

						scope.onChangeCustomAddress = function() {
							if (prevCustomAddressId != scope.contact.CustomAddressId) {
								prevCustomAddressId = scope.contact.CustomAddressId;
								getRegistrantInfo(scope.contact.CustomAddressId);
							}

						}

						$templateCache.get('/Profile/Tools/DomainContacts/ItemContacts/Template/').then(function(result) {
							element.replaceWith($compile(result.data)(scope));
						});
					}
				});
			}
		};
	}
]);

app.directive('contactsInfoItems', ['$rootScope', function($rootScope) {
		return {
			restrict: 'E',
			replace: true,
			scope: {
				item: '=item'
			},
			template: "<div class='form'><ng-form name='form'>" +
				"<contacts-info-item contacts='item.contacts' contact='item.contacts.Registrant'></contacts-info-item>" +
				"<contacts-info-item contacts='item.contacts' contact='item.contacts.Admin'></contacts-info-item>" +
				"<contacts-info-item contacts='item.contacts' contact='item.contacts.Tech'></contacts-info-item>" +
				"<contacts-info-item contacts='item.contacts' contact='item.contacts.Billing'></contacts-info-item>" +
				"</ng-form> </div>",
			link: function postLink(scope, element, attrs) {
				scope.$watch('item', function (newValue, oldValue) {
					if (newValue != null && newValue.contacts != null) {
						scope.item.contacts.form = scope['form'];
						scope.item.contacts.Registrant.title = "Registrant Contact";
						scope.item.contacts.Registrant.contactType = $rootScope.contactType.Registrant;
						scope.item.contacts.Registrant.customAddressDropDownId = scope.item.contacts.customAddressDropDownPrefixId + "Registrant";

						scope.item.contacts.Admin.title = "Administrative Contact";
						scope.item.contacts.Admin.contactType = $rootScope.contactType.Administrative;
						scope.item.contacts.Admin.customAddressDropDownId = scope.item.contacts.customAddressDropDownPrefixId + "Admin";

						scope.item.contacts.Tech.title = "Technical Contact";
						scope.item.contacts.Tech.contactType = $rootScope.contactType.Techinical;
						scope.item.contacts.Tech.customAddressDropDownId = scope.item.contacts.customAddressDropDownPrefixId + "Tech";

						scope.item.contacts.Billing.title = "Billing Contact";
						scope.item.contacts.Billing.contactType = $rootScope.contactType.Billing;
						scope.item.contacts.Billing.customAddressDropDownId = scope.item.contacts.customAddressDropDownPrefixId + "Billing";
					}
				});
			}
		};
	}
]);;
app.service('affixScrollSpyService', [
    '$window', function($window) {
        var rawData = function(w) {
            // retrieve interesting data
            var raw = {
                width: w.innerWidth,
                height: w.innerHeight,
                maxWidth: w.document.body.scrollWidth,
                maxHeight: w.document.body.scrollHeight,
                posX: w.scrollX || w.pageXOffset || w.document.documentElement.scrollLeft,
                posY: w.scrollY || w.pageYOffset || w.document.documentElement.scrollTop
            };

            // remove but log overscroll
            if (raw.posX < 0) {
                raw.posX = 0;
                raw.overscrollLeft = true;
            } else if (raw.posX + raw.width > raw.maxWidth) {
                raw.posX = raw.maxWidth - raw.width;
                raw.overscrollRight = true;
            }

            if (raw.posY < 0) {
                raw.posY = 0;
                raw.overscrollTop = true;
            } else if (raw.posY + raw.height > raw.maxHeight) {
                raw.posY = raw.maxHeight - raw.height;
                raw.overscrollBottom = true;
            }
            raw.hasOverscroll = raw.overscrollTop || raw.overscrollBottom || raw.overscrollLeft || raw.overscrollRight;

            return raw;
        };

        // calculate difference between last state and current state
        var getDelta = function(state1, state2) {

            // if state1 is undefined, return state2 + isEqual=false and velocity=0 as delta
            if (!state1 || !state2)
                return angular.extend(
                    { isEqual: false, velocityX: 0, velocityY: 0 },
                    state2
                );

            // calculate delta of state1 and state2
            var delta = {
                posX: state2.posX - state1.posX,
                posY: state2.posY - state1.posY,
                width: state2.width - state1.width,
                height: state2.height - state1.height,
                maxWidth: state2.maxWidth - state1.maxWidth,
                maxHeight: state2.maxHeight - state1.maxHeight,
            };

            // add velocity information
            if (state2.width > 0)
                delta.velocityX = delta.posX / state2.width;
            if (state2.height > 0)
                delta.velocityY = delta.posY / state2.height;

            // if any property is not 0, the delta is not zero
            delta.isEqual = !(
                delta.posX !== 0 ||
                    delta.posY !== 0 ||
                    delta.width !== 0 ||
                    delta.height !== 0 ||
                    delta.maxWidth !== 0 ||
                    delta.maxHeight !== 0
            );

            return delta;
        };

        var handlers = {};
        var lastPos;
        var scrollHandler = function(force) {
            var curPos = rawData($window);
            var delta = getDelta(lastPos, curPos);
            if (!delta.isEqual || curPos.hasOverscroll || force) {
                for (var k in handlers) {
                    var cond = handlers[k].cond;
                    if (cond(curPos, delta) || force) {
                        handlers[k].handler(curPos, delta);
                    }
                }
                lastPos = curPos;
            }
        };
        angular.element($window).on('scroll', scrollHandler);

        var self = this;

        // id generator
        var idgen = 0;

        this.trigger = function() {
            this.isForced = true;
            scrollHandler(true);
            this.isForced = false;
        };

        // generic handler, cond() should return true/false based on delta
        this.addHandler = function(cond, handler) {
            handlers[idgen] = { cond: cond, handler: handler };
            idgen++;
            return idgen - 1;
        };

        // call this to clean up
        this.removeHandler = function(id) {
            delete handlers[id];
        };

        // add handler for all scroll
        this.onScroll = function(handler) {
            return self.addHandler(
                function() { return true; },
                function(raw, delta) { handler(raw, delta); }
            );
        };

        // add handler for horizontal scroll
        this.onXScroll = function(handler) {
            return self.addHandler(
                function(cur, delta) { return delta.posX !== 0; },
                function(raw, delta) { handler(raw.posX, delta.posX, raw, delta); }
            );
        };

        // add handler for vertical scroll
        this.onYScroll = function(handler) {
            return self.addHandler(
                function(cur, delta) { return delta.posY !== 0; },
                function(raw, delta) { handler(raw.posY, delta.posY, raw, delta); }
            );
        };

        // add handlers for various overscroll events
        this.onOverscrollHorz = function(handler) {
            return self.addHandler(
                function(cur, delta) { return cur.overscrollLeft || cur.overscrollRight; },
                handler
            );
        };

        this.onOverscrollLeft = function(handler) {
            return self.addHandler(
                function(cur, delta) { return cur.overscrollLeft; },
                handler
            );
        };

        this.onOverscrollRight = function(handler) {
            return self.addHandler(
                function(cur, delta) { return cur.overscrollRight; },
                handler
            );
        };

        this.onOverscrollVert = function(handler) {
            return self.addHandler(
                function(cur, delta) { return cur.overscrollTop || cur.overscrollBottom; },
                handler
            );
        };

        this.onOverscrollTop = function(handler) {
            return self.addHandler(
                function(cur, delta) { return cur.overscrollTop; },
                handler
            );
        };

        this.onOverscrollBottom = function(handler) {
            return self.addHandler(
                function(cur, delta) { return cur.overscrollBottom; },
                handler
            );
        };

    }
]);
app.directive('angAffix', [
    'affixScrollSpyService', function(affixScrollSpyService) {
        var affixFn = function(shouldAffixFn, wasAffixed, affixClass, elem) {
            var shouldAffix = shouldAffixFn(elem[0].getBoundingClientRect());
            if (shouldAffix !== wasAffixed) {
                if (shouldAffix) {
                    elem.addClass(affixClass);
                } else {
                    elem.removeClass(affixClass);
                }
            }
        };

        var scrollHandler;
        var linkFn = function(affixTo, affixClass, elem) {
            var isAffixed = false,
                wasAffixed = false,
                affixedPos,
                trigger = false;

            if (affixTo === 'top') {
                scrollHandler = affixScrollSpyService.onYScroll(function(pos) {
                    wasAffixed = isAffixed;
                    affixFn(function(rect) {
                        if (isAffixed) {
                            isAffixed = (affixedPos <= pos);
                            return isAffixed;
                        } else if (rect.top <= 0) {
                            if (rect.top < 0) affixedPos = pos + rect.top;
                            else affixedPos = pos;
                            return (isAffixed = true);
                        }
                        return false;
                    }, wasAffixed, affixClass, elem);
                });
            } else if (affixTo === 'bottom') {
                trigger = true; // need to trigger scroll event
                scrollHandler = affixScrollSpyService.onYScroll(function(pos, delta, data) {
                    wasAffixed = isAffixed;
                    affixFn(function(rect) {
                        if (isAffixed) {
                            // we are still affixed if we have not scrolled passed
                            isAffixed = (affixedPos >= pos);
                            return isAffixed;
                        } else if (rect.bottom >= data.height) {
                            // lets affix
                            // first event when at top is a special case,
                            // calculate affixed pos differently
                            if (affixScrollSpyService.isForced && pos === 0)
                                affixedPos = pos + rect.bottom - data.height - rect.height;
                            else
                                affixedPos = pos + rect.bottom - data.height;
                            return (isAffixed = true);
                        }
                        // not affixed
                        return false;
                    }, wasAffixed, affixClass, elem);
                });
            } else if (affixTo === 'left') {
                scrollHandler = affixScrollSpyService.onXScroll(function(pos) {
                    wasAffixed = isAffixed;
                    affixFn(function(rect) {
                        if (isAffixed) {
                            isAffixed = (affixedPos <= pos);
                            return isAffixed;
                        } else if (rect.left <= 0) {
                            if (rect.left < 0) affixedPos = pos + rect.left;
                            else affixedPos = pos;
                            return (isAffixed = true);
                        }
                        return false;
                    }, wasAffixed, affixClass, elem);
                });
            } else if (affixTo === 'right') {
                trigger = true; // need to trigger scroll event
                scrollHandler = affixScrollSpyService.onXScroll(function(pos, delta, data) {
                    wasAffixed = isAffixed;
                    affixFn(function(rect) {
                        if (isAffixed) {
                            // we are still affixed if we have not scrolled passed
                            isAffixed = (affixedPos >= pos);
                            return isAffixed;
                        } else if (rect.right >= data.width) {
                            // lets affix
                            // first event when at left is a special case,
                            // calculate affixed pos differently
                            if (affixScrollSpyService.isForced && pos === 0)
                                affixedPos = pos + rect.right - data.width - rect.width;
                            else
                                affixedPos = pos + rect.right - data.width;
                            return (isAffixed = true);
                        }
                        // not affixed
                        return false;
                    }, wasAffixed, affixClass, elem);
                });
            }
            if (trigger) {
                affixScrollSpyService.trigger();
            }
        };

        return {
            restrict: 'A',
            scope: {
                affix: '@',
                affixClass: '@'
            },
            link: function(scope, elem, attrs, controller) {
                // call linking function, supply default values if needed
                scope.affix = scope.affix || 'top';
                scope.affixClass = scope.affixClass || 'affix';
                linkFn(scope.affix, scope.affixClass, elem);
                scope.$on('destroy', function() {
                    affixScrollSpyService.removeHandler(scrollHandler);
                });
            }
        };
    }
]);
    

;
/*
    Proxy class for cache system where 
*/

angular.module('ncCache', [])
    .service('ncCache', ['$cacheFactory', function ($cacheFactory) {
        var cacheIdObj;
        var initialize = function (cacheId) {
            cacheIdObj = $cacheFactory.get(cacheId);
        };
        
        this.get = function (key) {
            if (typeof cacheIdObj === 'undefined') {
                throw 'Cache not initialized properly';
            }
            else {
                return cacheIdObj.get(key);
            }
        };

        this.put = function (key, value) {
            if (typeof cacheIdObj === 'undefined') {
                throw 'Cache not initialized properly';
            }
            else {
                return cacheIdObj.put(key, value);
            }
        };

        this.remove = function (key)
        {
            if (typeof cacheIdObj === 'undefined') {
                throw 'Cache not initialized properly';
            }
            else {
                return cacheIdObj.put(key, value);
            }
        };

        this.removeAll = function () {
            if (typeof cacheIdObj === 'undefined') {
                throw 'Cache not initialized properly';
            }
            else {
                return cacheIdObj.removeAll();
            }
        };
        
        this.Initialize = initialize;
        return cacheService;
    }]);
;
(function (angular, factory) {
    'use strict';
    if (typeof define === 'function' && define.amd) {
        define(['angular'], function (angular) {
            return factory(angular);
        });
    } else {
        return factory(angular);
    }
}(angular || null, function (angular) {
    var ncGridModule = angular.module('ncGrid', []);

    ncGridModule.service('ncGridParams', ['$q', '$filter', '$timeout', 'ncGridEventNames', function ($q, $filter, $timeout, ncGridEventNames) {

        function instance() {
            var self = this;
            this.ncGridScope = null;
            this.eventScope = null;
            this.eventListenerDefer = $q.defer();
            this.eventListener = this.eventListenerDefer.promise;
            

            this.getStateModel = function () {

                var ncGridStateModel = {
                    ServerChunkSize: self.parameters.mapping.serverChunkSize,
                    LastAvailableChunkIndex: self.parameters.mapping.lastAvailableChunkIndex,
                    IsLazyLoading: self.parameters.mapping.isLazyLoading,
                    TotalServerItemsCount: self.parameters.storage.totalItemsCount
                }
                if (self.parameters.filter.isEnabled && self.parameters.filter.isActive) {
                    ncGridStateModel.FilterProperties = self.parameters.filter.properties;
                }
                if (self.parameters.category.isEnabled && self.parameters.category.isActive) {
                    ncGridStateModel.CategoryProperties = self.parameters.category.properties;
                }
                if (self.parameters.search.isEnabled) {
                    ncGridStateModel.SearchValue = self.parameters.search.value;
                }
                if (self.parameters.ordering.isEnabled && self.parameters.ordering.isActive) {
                    ncGridStateModel.OrderModel = self.settings.ordering.getActiveEntity();
                }
                if (self.parameters.calendar.isEnabled && self.parameters.calendar.isActive) {
                    ncGridStateModel.CalendarModel = self.parameters.calendar.activeEntity;
                }

                return ncGridStateModel;
            }

            this.parameters = {
                storage: {
                    isFullData: false, //[bool] is all the data from the server available in client side
                    isOneItem: false, //[bool] is only one element in grid
                    isEmpty: false, //[bool] is no elements in grid
                    totalItemsCount: null, //[int] items count available on the server
                    requestData: [], //[array] the date of the request from the server
                    sortedData: [], //[array(object)] available sorted data 
                    pageData: [], //[array(object)] data on the page
                    addNewFirst: true, //[bool] after add new items to grid add it as the first element
                    totalServerItemsCount: null //[bool] total items count available on the server
                },
                mapping: {
                    isLoading: true, //[bool] show progress for all grid
                    isPageFull: false, //[bool] is all data available for rendered page  
                    isLazyLoading: true, //[bool] is need cycle loading chunks from the server after reload  (by default true : property issued for the possible future expansion of the functional)
                    isConcatPageDataFromNewServerChunk: true, //[bool] update data of grid after new server chunk is available on client
                    serverChunkSize: 10000, //[bool] default server chunk size that requested from server
                    renderChunkSize: 25, //[bool] default client chunk size that displayed at a time
                    lastRenderedIndex: 0, //[bool] last displayed item in the grid for page 
                    lastAvailableChunkIndex: 0, //[bool] last available server chunk index that posted to server request on lazy loading
                    isNcRowDirective: false, //[bool] if NcRowDirective used for render grid 
                    isRenderMoreProcessing: false //[bool] render more on processing step
                },
                pagination: {
                    isTopEnabled: false, //[bool]  if top pagination directive present in html
                    isBottomEnabled: false, //[bool]  if bottom pagination directive present in html
                    isTopActive: false, //[bool]  if top pagination directive present in html and displayed now
                    isBottomActive: false, //[bool]  if bottom pagination directive present in html and displayed now
                    sizes: [25, 50, 100, 250, 500, 1000], //[array(int)] available items count on the page
                    totalPageCount: 0, //[int]  total page count
                    pageSize: 25, //[int]  maximum items on the one page
                    pageIndex: 1, //[int]  current page index
                    pageSizeEntities: [], //[array(strings)] array for top pignations
                    bottomPageEntities: [] //[array(strings)] array for bottom pignations
                },
                filter: {
                    isEnabled: false,//[bool] filter directive is exist for this grid
                    isActive: false,//[bool] is filter restrictions active (setup inside the module)
                    properties: [], //[{key:'[string]',value:'[string]'}]
                    availableProperties: []
                },
                category: {
                    isEnabled: false,//[bool] category directive is exist for this grid
                    isActive: false,//[bool] is category restrictions active (setup inside the module)
                    properties: [], //[{key:'[string]',value:'[string]'}]
                    availableProperties: []
                },
                search: {
                    isEnabled: false,//[bool] search directive is exist for this grid
                    value: null,//[string] current search value
                    serchPropertyNames: [],//[array[string]] name of properties from row object which will run search
                },
                ordering: {
                    isEnabled: false,//[bool] ordering directive is exist for this grid
                    isActive: false,//[bool] ordering is used (setup inside the module)
                    activeEntity: {},//[object] used ordering object
                    notActiveClassName: 'order',//[string] css class for column that is not sorted
                    activeClassName: 'current-order',//[string] css class for column that is sorted
                    descMarker: "",//[char] prefix on column with descanding corting
                    ascMarker: "",//[char] prefix on column with ascending corting
                    usedEntities: [],//[array] list of all available ordering objects
                    alreadySorted: false//[bool] is user used ordering
                },
                selection: {
                    isSearchBySelected: false,//[bool] when some  restrictions are changed search only in selected items 
                    isSelectAllEnabled: false,//[bool] "select all"  directive is exist for this grid
                    isSelectPageEnabled: false,//[bool] "select all on the page"  directive is exist for this grid
                    allItemsSelected: false,//[bool] is all the data from the server is marked -selected and present in selectedItems list
                    pageItemsSelected: false,//[bool] is all the data from the page is marked -selected and present in selectedItems list
                    selectedPropertyName: '$ncColumnSelected',//[string] name of dynamic property in row object for mark selected
                    selectedItems: [],//[array] list of selected items in grid
                    isSelectAllActive: false,//[bool] is "select all checkbox" is visible and all the conditions in the business logic are valid (setup inside the module)
                    isSelectPageActive: false,//[bool] is "select all on the page checkbox" is visible and all the conditions in the business logic are valid (setup inside the module)
                },
                calendar: {
                    isEnabled: false,//[bool] calendar directive is exist for this grid
                    isActive: false,//[bool] is calendar restrictions active (setup inside the module)
                    activeEntity: {},//[{from:[Date],to:[Date]}]
                    propertyName: null//[string]
                }
            }
            this.settings = {
                lazyLoading: function () {
                    var getDataDefer = $q.defer();
                    self.settings.events.broadcastEvent(ncGridEventNames.ncGridLoadServerChunkBefore, { pageIndex: self.parameters.pagination.pageIndex, lastAvailableChunkIndex: self.parameters.mapping.lastAvailableChunkIndex });
                    self.settings.getData(getDataDefer, self.getStateModel());
                    getDataDefer.promise.then(function (result) {
                        if (result != undefined && result.Data != undefined) {
                            if (self.parameters.selection.allItemsSelected) {
                                result.Data.forEach(function (columnData) {
                                    var selectState = self.settings.selection.columnSelect(columnData, true);
                                    columnData[self.parameters.selection.selectedPropertyName] = selectState;
                                    if (selectState) {
                                        self.parameters.selection.selectedItems.push(columnData);
                                    }
                                });
                            }
                            self.parameters.storage.requestData = self.parameters.storage.requestData.concat(result.Data);
                            self.parameters.storage.totalItemsCount = (result.TotalServerItemsCount != null) ? result.TotalServerItemsCount : self.parameters.storage.requestData.length;
                            if (self.settings.mapping.isAnyRestrictions(self.parameters, self.settings)) {
                                self.parameters.storage.sortedData = self.settings.mapping.getSortedData(self.parameters.storage.requestData, self.parameters, self.settings);
                            }
                            self.settings.mapping.updateState(self.parameters, self.settings);
                            if (self.parameters.mapping.isConcatPageDataFromNewServerChunk && !self.parameters.mapping.isPageFull && self.settings.mapping.isAnyRestrictions(self.parameters, self.settings)) {
                                self.settings.mapping.concatPageDataFromNewServerChunk(result.Data, self.parameters, self.settings);
                            }
                        }
                        if (result != undefined && result.Data.length >= self.parameters.mapping.serverChunkSize) {
                            self.parameters.mapping.lastAvailableChunkIndex++;
                            if (self.parameters.mapping.isLazyLoading) {
                                self.settings.lazyLoading();
                            }
                        } else {
                            self.parameters.storage.isFullData = true;
                            self.settings.mapping.updateState(self.parameters, self.settings);
                        }
                        if (result != undefined && result.TotalServerItemsCount != null && result.TotalServerItemsCount == self.parameters.storage.requestData.length) {
                            self.parameters.storage.isFullData = true;
                        }
                        self.settings.events.broadcastEvent(ncGridEventNames.ncGridLoadServerChunkBefore, { pageIndex: self.parameters.pagination.pageIndex, lastAvailableChunkIndex: self.parameters.mapping.lastAvailableChunkIndex });
                    });
                },
                reload: function () {
                    self.parameters.mapping.lastRenderedIndex = 0;
                    self.parameters.mapping.lastAvailableChunkIndex = 0;
                    self.parameters.mapping.isLoading = true;
                    self.parameters.storage.requestData = [];
                    self.parameters.storage.pageData = [];
                    self.parameters.storage.sortedData = [];
                    self.parameters.search.value = null;

                    var reloadGridDefer = $q.defer();
                    var getDataDefer = $q.defer();
                    self.settings.events.broadcastEvent(ncGridEventNames.ncGridLoadServerChunkBefore, { pageIndex: self.parameters.pagination.pageIndex, lastAvailableChunkIndex: self.parameters.mapping.lastAvailableChunkIndex });
                    self.settings.getData(getDataDefer, self.getStateModel());
                    getDataDefer.promise.then(function (result) {
                        if (result != undefined && result.Data != undefined && Array.isArray(result.Data)) {
                            self.parameters.storage.requestData = result.Data;
                            self.parameters.storage.totalItemsCount = (result.TotalServerItemsCount != null) ? result.TotalServerItemsCount : self.parameters.storage.requestData.length;
                            self.parameters.mapping.lastAvailableChunkIndex++;
                            if (self.parameters.mapping.isLazyLoading) {
                                self.parameters.storage.isFullData = false;
                                self.settings.lazyLoading();
                            } else {
                                self.parameters.storage.isFullData = true;
                                self.parameters.mapping.isLoading = false;
                                self.settings.mapping.updateState(self.parameters, self.settings);
                            }
                            if (result.TotalServerItemsCount != null && result.TotalServerItemsCount == self.parameters.storage.requestData.length) {
                                self.parameters.storage.isFullData = true;
                            }
                        } else {
                            self.parameters.storage.requestData = [];
                            self.parameters.storage.isFullData = true;
                            self.parameters.storage.totalItemsCount = 0;
                            self.parameters.mapping.isLoading = false;
                        }

                        self.parameters.storage.isOneItem = self.parameters.storage.requestData.length == 1;
                        self.parameters.storage.isEmpty = self.parameters.storage.requestData.length == 0;
                        self.settings.events.broadcastEvent(ncGridEventNames.ncGridLoadServerChunkAfter, { pageIndex: self.parameters.pagination.pageIndex, lastAvailableChunkIndex: self.parameters.mapping.lastAvailableChunkIndex });
                        self.settings.mapping.renderPage();
                        reloadGridDefer.resolve();
                    });
                    return reloadGridDefer.promise;
                },
                getData: function ($defer, ncGridState) {
                    $defer.resolve([]);
                    return $defer.promise;
                },
                mapping: {
                    resetFilters: function() {
                        self.parameters.filter.availableProperties.forEach(function (element) {
                            element.clearState();
                        });
                        self.parameters.filter.properties = [];
                        self.settings.pagination.setPage(1);
                    },
                    updateFilterPosition: function () {
                        $timeout(function () {
                            $('.table-sticky-filters').trigger('update');
                        }, 0);
                    },
                    concatPageDataFromNewServerChunk: function (newChunkData, parameters, settings) {
                        var avalibleToAddCount = parameters.pagination.pageSize - parameters.storage.pageData.length;
                        var sortList = settings.mapping.getSortedData(newChunkData, parameters, settings);
                        parameters.storage.pageData = parameters.storage.pageData.concat(sortList.slice(0, avalibleToAddCount));
                    },
                    isAnyRestrictions: function (parameters, settings) {
                        return parameters.filter.isActive || parameters.category.isActive || parameters.search.value != null || (parameters.calendar.isActive && parameters.calendar.activeEntity != null);
                    },
                    updateState: function (parameters, settings) {
                        if (parameters.storage.totalItemsCount < parameters.storage.requestData.length) {
                            parameters.storage.totalItemsCount = parameters.storage.requestData.length;
                        }
                        var tmpSortedData = self.settings.mapping.getSortedData(parameters.storage.requestData, parameters, settings);
                        if (tmpSortedData.length != parameters.storage.sortedData.length && parameters.storage.pageData.length == 0) {
                            parameters.storage.sortedData = tmpSortedData;
                            settings.mapping.renderMore();
                        } else {
                            parameters.storage.sortedData = tmpSortedData;
                        }
                        settings.pagination.update(parameters, settings);
                        $timeout(function () {
                            parameters.mapping.isPageFull = settings.mapping.isPageFullyRendered(parameters, settings);
                        });
                    },
                    renderPage: function () {
                        self.settings.events.broadcastEvent(ncGridEventNames.ncGridRenderPageBefore, { pageIndex: self.parameters.pagination.pageIndex });
                        if (self.parameters.storage.requestData == null || self.parameters.storage.requestData.length == 0) {
                            self.parameters.mapping.isPageFull = true;
                            self.parameters.mapping.isLoading = false;
                            self.settings.events.broadcastEvent(ncGridEventNames.ncGridRenderPageAfter, { pageIndex: self.parameters.pagination.pageIndex });
                            return;
                        }
                        self.parameters.mapping.isLoading = true;
                        if (!self.parameters.pagination.isTopEnabled) {
                            self.parameters.pagination.pageSize = self.parameters.storage.requestData.length;
                        }
                        self.parameters.mapping.lastRenderedIndex = 0;
                        // $timeout(function() {
                        self.settings.mapping.setPageData(self.parameters, self.settings);
                        self.settings.pagination.update(self.parameters, self.settings);
                        self.parameters.mapping.isPageFull = self.settings.mapping.isPageFullyRendered(self.parameters, self.settings);
                        self.settings.mapping.updateFilterPosition();
                        self.settings.selection.checkSelectPage();
                        //self.parameters.mapping.isLoading = false;
                        $timeout(function () {
                            self.parameters.mapping.isPageFull = self.settings.mapping.isPageFullyRendered(self.parameters, self.settings);
                        });
                        //});
                        self.settings.events.broadcastEvent(ncGridEventNames.ncGridRenderPageAfter, { pageIndex: self.parameters.pagination.pageIndex });

                    },
                    renderMore: function () {
                        if (self.parameters.mapping.isRenderMoreProcessing == true || self.parameters.mapping.isPageFull == true) {
                            return;
                        }
                        self.parameters.mapping.isLoading = true
                        self.settings.events.broadcastEvent(ncGridEventNames.ncGridRenderMoreBefore, { pageIndex: self.parameters.pagination.pageIndex });
                        self.settings.mapping.setRangeDataToRendered(self.parameters);
                        self.settings.mapping.updateFilterPosition();
                        self.settings.events.broadcastEvent(ncGridEventNames.ncGridRenderMoreAfter, { pageIndex: self.parameters.pagination.pageIndex });
                        self.parameters.mapping.isPageFull = self.settings.mapping.isPageFullyRendered(self.parameters, self.settings);
                        $timeout(function () {
                            self.parameters.mapping.isLoading = false;
                        });

                    },
                    isPageFullyRendered: function (parameters, settings) {
                        if (parameters.storage.pageData.length >= parameters.pagination.pageSize) {
                            return true;
                        } else {
                            if (!parameters.storage.isFullData && settings.mapping.isAnyRestrictions(parameters, settings)) {
                                return false;
                            }
                            else if (!self.parameters.storage.isFullData && parameters.storage.pageData.length < parameters.pagination.pageSize) {
                                return false;
                            }
                            else if (self.parameters.storage.isFullData && parameters.storage.pageData.length < settings.mapping.getFullPageData().length) {
                                return false;
                            }
                        }
                        return true;
                    },
                    getSortedData: function (listToSort, parameters, settings) {
                        var sortedData = listToSort;
                        if (parameters.selection.isSearchBySelected && parameters.selection.selectedItems.length > 0
                            && settings.mapping.isAnyRestrictions(parameters, settings)
                            && (parameters.selection.isSelectAllEnabled || parameters.selection.isSelectPageEnabled)) {
                            sortedData = parameters.selection.selectedItems;
                        }
                        if (parameters.calendar.isActive && parameters.calendar.activeEntity != null) {
                            sortedData = $filter('ncGridDateRangeByProperty')(sortedData, { property: parameters.calendar.propertyName, from: parameters.calendar.activeEntity.from, to: parameters.calendar.activeEntity.to });
                        }
                        var restrictionPropertiesList = parameters.filter.properties.concat(self.parameters.category.properties);
                        var parametersForFilter = [];
                        var parametersForFilterRequired = [];
                        for (var i = 0; i < restrictionPropertiesList.length; i++) {
                            var property = {
                                propertyName: restrictionPropertiesList[i].key,
                                propertyValue: restrictionPropertiesList[i].value.toString(),
                                required: restrictionPropertiesList[i].required
                            }
                            if (property.required) {
                                parametersForFilterRequired.push(property);
                            } else {
                                parametersForFilter.push(property);
                            }
                        }
                        sortedData = $filter('propertyFilter')($filter('propertyFilter')(sortedData, parametersForFilterRequired), parametersForFilter, true);

                        if (parameters.search.isEnabled && parameters.search.value != null) {
                            sortedData = self.settings.search(sortedData, parameters);
                        }
                        return sortedData;
                    },
                    setPageData: function (parameters, settings) {
                        if (parameters.ordering.isActive && parameters.storage.isFullData) {
                            var activeOrdering = settings.ordering.getActiveEntity();
                            if (activeOrdering != null && !parameters.ordering.alreadySorted) {
                                parameters.storage.requestData = $filter('ncGridStableSorting')(parameters.storage.requestData, activeOrdering.propertyName, activeOrdering.descending);
                                self.parameters.ordering.alreadySorted = true;
                            }
                        }
                        parameters.storage.sortedData = settings.mapping.getSortedData(parameters.storage.requestData, parameters, settings);
                        parameters.selection.isSelectPageActive = parameters.storage.sortedData.length > 1;
                        parameters.selection.isSelectAllActive = parameters.storage.sortedData.length > 1;
                        self.parameters.storage.pageData = [];
                        self.parameters.mapping.isPageFull = false;
                        self.settings.mapping.renderMore();
                    },
                    getFullPageData: function () {
                        var start = (self.parameters.pagination.pageIndex - 1) * self.parameters.pagination.pageSize;
                        var end = start + self.parameters.pagination.pageSize;
                        return self.parameters.storage.sortedData.slice(start, end);
                    },
                    setRangeDataToRendered: function (parameters) {
                        if (self.ncGridScope == null) {
                            return;
                        }
                        self.ncGridScope.$evalAsync(function () {
                            var end = parameters.mapping.lastRenderedIndex + parameters.mapping.renderChunkSize;
                            if (end > parameters.pagination.pageSize) {
                                end = parameters.pagination.pageSize;
                            }
                            if (end > self.parameters.storage.sortedData.length) {
                                end = self.parameters.storage.sortedData.length;
                            }
                            var range = (parameters.pagination.pageIndex - 1) * parameters.pagination.pageSize;
                            var readyArray = self.parameters.storage.sortedData.slice(range + parameters.mapping.lastRenderedIndex, range + end);
                            for (var i = 0; i < readyArray.length; i++) {
                                self.parameters.storage.pageData.push(readyArray[i]);
                                parameters.mapping.lastRenderedIndex++;
                            }
                            if (!parameters.mapping.isLazyLoading) {
                                self.parameters.mapping.isPageFull = self.settings.mapping.isPageFullyRendered(self.parameters, self.settings);
                            }
                        });

                    },
                },
                pagination: {
                    update: function (parameters, settings) {
                        var validItemsCount = parameters.storage.requestData.length;
                        self.parameters.filter.isActive = self.parameters.filter.isEnabled && self.parameters.filter.properties.length > 0;
                        self.parameters.category.isActive = self.parameters.category.isEnabled && self.parameters.category.properties.length > 0;

                        var isAnyRestrictions = self.settings.mapping.isAnyRestrictions(self.parameters, self.settings);
                        if (isAnyRestrictions) {
                            validItemsCount = parameters.storage.sortedData.length;
                        }
                        if (validItemsCount < parameters.pagination.pageSize) {
                            for (var i = 0; i < parameters.pagination.sizes.length; i++) {
                                if (parameters.pagination.sizes[i] < validItemsCount) {
                                    parameters.pagination.pageSize = parameters.pagination.sizes[i];
                                }
                            }
                        }
                        if (parameters.pagination.sizes.indexOf(parameters.pagination.pageSize) == -1 && validItemsCount > parameters.pagination.pageSize) {
                            for (var i = parameters.pagination.sizes.length; i > 0 ; i--) {
                                if (parameters.pagination.sizes[i] < validItemsCount) {
                                    parameters.pagination.pageSize = parameters.pagination.sizes[i];
                                    break;
                                }
                            }
                        }
                        if (isAnyRestrictions) {
                            parameters.pagination.totalPageCount = Math.ceil(validItemsCount / parameters.pagination.pageSize);
                        } else {
                            parameters.pagination.totalPageCount = Math.ceil(parameters.storage.totalItemsCount / parameters.pagination.pageSize);
                        }

                        if (parameters.pagination.isTopActive = (parameters.pagination.isTopEnabled && parameters.pagination.totalPageCount > 1)) {
                            settings.pagination.fillPageSizesEntities(isAnyRestrictions ? validItemsCount : parameters.storage.totalItemsCount);
                        }
                        if (parameters.pagination.isBottomActive = (parameters.pagination.isBottomEnabled && parameters.pagination.totalPageCount > 1)) {
                            settings.pagination.fillBottomPageEntities();
                        }
                    },
                    setPage: function (pageIndex) {
                        self.parameters.pagination.pageIndex = pageIndex;
                        self.settings.mapping.renderPage();
                    },
                    setPreviousPage: function () {
                        self.parameters.pagination.pageIndex--;
                        self.settings.mapping.renderPage();
                    },
                    setNextPage: function () {
                        self.parameters.pagination.pageIndex++;
                        self.settings.mapping.renderPage();
                    },
                    changePageSize: function (newSize) {
                        self.settings.events.broadcastEvent(ncGridEventNames.ncGridChangePageSizeBefore, { newValue: newSize, oldValue: self.parameters.pagination.pageSize });
                        if (parseInt(newSize)) {
                            self.parameters.pagination.pageSize = newSize;
                        } else {
                            self.parameters.pagination.pageSize = self.parameters.storage.totalItemsCount;
                        }
                        self.parameters.pagination.pageIndex = 1;
                        self.settings.mapping.renderPage();
                        self.settings.events.broadcastEvent(ncGridEventNames.ncGridChangePageSizeAfter, { newValue: newSize, oldValue: self.parameters.pagination.pageSize });
                    },
                    fillPageSizesEntities: function (itemsCount) {
                        self.parameters.pagination.pageSizeEntities = [];
                        self.parameters.pagination.sizes.forEach(function (pageSize) {
                            if (pageSize <= itemsCount) {
                                self.parameters.pagination.pageSizeEntities.push(pageSize);
                            }
                        });
                        var lastIndex = self.parameters.pagination.pageSizeEntities[self.parameters.pagination.pageSizeEntities.length - 1];
                        if (lastIndex < 1000 && lastIndex < itemsCount && lastIndex != itemsCount) {
                            self.parameters.pagination.pageSizeEntities.push(itemsCount);
                        }
                    },
                    fillBottomPageEntities: function () {
                        self.parameters.pagination.bottomPageEntities = [];
                        var list = [];
                        var pageCount = self.parameters.pagination.totalPageCount;
                        if (pageCount <= 15) {
                            for (var index = 1; index <= pageCount; index++) {
                                list.push(index);
                            }
                        } else {
                            var page = self.parameters.pagination.pageIndex;
                            if (list.indexOf(page - 4) == -1 && page - 4 > 0) {
                                list.push(1);
                                list.push('...');
                            } else if (page != 1) {
                                list.push(1);
                            }
                            if (list.indexOf(page - 2) == -1 && page - 2 > 0) {
                                list.push(page - 2);
                            }
                            if (list.indexOf(page - 1) == -1 && page - 1 > 0) {
                                list.push(page - 1);
                            }
                            list.push(page);
                            if (list.indexOf(page + 1) == -1 && page + 1 < pageCount) {
                                list.push(page + 1);
                            }
                            if (list.indexOf(page + 2) == -1 && page + 2 < pageCount) {
                                list.push(page + 2);
                            }
                            if (list.indexOf(page + 4) == -1 && page + 4 < pageCount) {
                                list.push('...');
                                list.push(pageCount);

                            } else if (page != pageCount) {
                                list.push(pageCount);
                            }
                        }
                        self.parameters.pagination.bottomPageEntities = list;
                    },
                },
                search: function (data, parameters) {
                    if (parameters.search.isEnabled && parameters.search.value != null && parameters.search.serchPropertyNames.length > 0) {
                        var serchEntity = {};
                        for (var searchKey = 0; searchKey < parameters.search.serchPropertyNames.length; searchKey++) {
                            serchEntity[parameters.search.serchPropertyNames[searchKey]] = parameters.search.value;
                        }
                        return $filter('ncGridStringEntryFilter')(data, serchEntity);
                    }
                    return data;
                },
                actions: {
                    removeItem: function (removeItem) {
                        var defer = $q.defer();
                        if (!removeItem) {
                            defer.resolve(null);
                        }
                        else {
                            //remove item from real data array
                            var removeItemIndex = self.parameters.storage.requestData.indexOf(removeItem);
                            self.settings.events.broadcastEvent(ncGridEventNames.ncGridRemoveItemBefore, { item: removeItem, index: removeItemIndex });

                            if (removeItemIndex != -1) {
                                //remove item from dirty data arrays
                                if (self.parameters.storage.pageData.indexOf(removeItem) != -1) {
                                    self.parameters.storage.pageData.splice(self.parameters.storage.pageData.indexOf(removeItem), 1);
                                }
                                if (self.parameters.storage.sortedData.indexOf(removeItem) != -1) {
                                    self.parameters.storage.sortedData.splice(self.parameters.storage.sortedData.indexOf(removeItem), 1);
                                }
                                if (self.parameters.storage.requestData.indexOf(removeItem) != -1) {
                                    self.parameters.storage.requestData.splice(self.parameters.storage.requestData.indexOf(removeItem), 1);
                                }

                                self.parameters.storage.isOneItem = self.parameters.storage.requestData.length == 1;
                                self.parameters.storage.isEmpty = self.parameters.storage.requestData.length == 0;

                                self.parameters.mapping.lastRenderedIndex--;
                                self.parameters.storage.totalItemsCount--;

                                if (self.parameters.storage.isOneItem && self.parameters.storage.pageData.length == 0) {
                                    self.parameters.search.value = null;
                                }

                                self.settings.selection.unselectItem(removeItem);
                                self.settings.pagination.update(self.parameters, self.settings);
                                self.parameters.selection.isSelectPageActive = self.parameters.storage.sortedData.length > 1;
                                self.parameters.selection.isSelectAllActive = self.parameters.storage.sortedData.length > 1;

                                if (self.parameters.storage.pageData.length == 0 && self.parameters.storage.sortedData.length > 0) {
                                    self.settings.pagination.setPage(1);
                                }
                                defer.resolve(removeItem);
                                self.settings.events.broadcastEvent(ncGridEventNames.ncGridRemoveItemAfter, { item: removeItem, index: removeItemIndex });
                            }
                            else {
                                defer.resolve(null);
                                self.settings.events.broadcastEvent(ncGridEventNames.ncGridRemoveItemAfter, { item: null, index: removeItemIndex });
                            }
                        }
                        return defer.promise;
                    },
                    addNewItem: function (newItem) {
                        var defer = $q.defer();
                        if (!newItem) {
                            defer.resolve(null);
                        }
                        else {
                            self.settings.events.broadcastEvent(ncGridEventNames.ncGridAddItemBefore, { item: newItem });

                            if (self.parameters.storage.addNewFirst) {
                                self.parameters.storage.pageData.unshift(newItem);
                            }
                            else {
                                self.parameters.storage.pageData.push(newItem);
                            }
                            self.parameters.storage.requestData.push(newItem);
                            self.parameters.storage.sortedData.push(newItem);
                            self.parameters.storage.isOneItem = self.parameters.storage.requestData.length == 1;
                            self.parameters.storage.totalItemsCount++;
                            if (!self.parameters.pagination.isTopEnabled) {
                                self.parameters.pagination.pageSize ++;
                            }

                            if (self.parameters.storage.isEmpty) {
                                self.parameters.storage.isEmpty = false;
                                self.settings.pagination.setPage(1);
                                defer.resolve(newItem);
                                self.settings.events.broadcastEvent(ncGridEventNames.ncGridAddItemAfter, { item: newItem });
                            } else {
                                self.parameters.storage.isEmpty = false;
                                self.settings.pagination.update(self.parameters, self.settings);
                                self.settings.selection.checkSelectPage();
                                self.parameters.selection.isSelectPageActive = self.parameters.storage.sortedData.length > 1;
                                self.parameters.selection.isSelectAllActive = self.parameters.storage.sortedData.length > 1;

                                defer.resolve(newItem);
                                self.settings.events.broadcastEvent(ncGridEventNames.ncGridAddItemAfter, { item: newItem });
                            }
                            self.settings.mapping.updateFilterPosition();
                        }
                        return defer.promise;
                    },
                    updateDropDownBtns: function () {
                        $timeout(function () {
                            $('.dropdown .dropdown-content .filter-dropdown').each(function (e) {
                                $this = $(this);
                                $this.closest('.dropdown-content').css({ 'left': '-9999em', 'display': 'block' });
                                if ($this.outerHeight() > 250) {
                                    $this.slimscroll({});
                                }
                                $this.closest('.dropdown-content').removeAttr('style');
                            });
                        }, 0, false);
                    }
                },
                selection: {
                    selectAll: function () {
                        self.settings.events.broadcastEvent(ncGridEventNames.ncGridSelectAllItemsBefore, { items: self.parameters.selection.selectedItems });
                        self.parameters.selection.allItemsSelected = !self.parameters.selection.allItemsSelected;
                        if (self.parameters.selection.allItemsSelected == false) {
                            self.settings.selection.unselectAll();
                        }
                        else {
                            self.parameters.selection.selectedItems = [];
                            self.parameters.storage.requestData.forEach(function (columnData) {
                                if (self.settings.selection.canChangeSelection(columnData)) {
                                    var selectState = self.settings.selection.columnSelect(columnData, true);
                                    columnData[self.parameters.selection.selectedPropertyName] = selectState;
                                    if (selectState) {
                                        self.parameters.selection.selectedItems.push(columnData);
                                    }
                                }
                            });
                            self.parameters.selection.allItemsSelected = true;
                        }
                        self.settings.events.broadcastEvent(ncGridEventNames.ncGridSelectAllItemsAfter, { items: self.parameters.selection.selectedItems });
                        self.settings.selection.checkSelectAll();
                    },
                    unselectAll: function () {
                        self.settings.events.broadcastEvent(ncGridEventNames.ncGridUnselectAllItemsBefore, { items: self.parameters.selection.selectedItems });
                        if (self.parameters.storage.requestData == null) { return; }
                        self.parameters.selection.selectedItems = [];
                        self.parameters.storage.requestData.forEach(function (element) {
                            element[self.parameters.selection.selectedPropertyName] = false;
                        });
                        self.parameters.selection.allItemsSelected = false;
                        self.settings.events.broadcastEvent(ncGridEventNames.ncGridUnselectAllItemsAfter, { items: self.parameters.selection.selectedItems });
                        self.settings.selection.checkSelectAll();
                    },
                    checkSelectAll: function () {
                        if (!self.parameters.selection.isSelectAllEnabled) {
                            self.parameters.selection.allItemsSelected = null;
                            return;
                        }
                        var selectedCount = 0;
                        var notSelectedCount = 0;
                        var cantChangeSelection = 0;
                        var fullList = self.parameters.storage.requestData;
                        for (var index = 0; index < fullList.length; index++) {
                            var columnData = fullList[index];
                            if (self.settings.selection.canChangeSelection(columnData)) {
                                if (columnData[self.parameters.selection.selectedPropertyName] == null || columnData[self.parameters.selection.selectedPropertyName] == false) {
                                    notSelectedCount++;
                                    var removeIndex = self.parameters.selection.selectedItems.indexOf(columnData);
                                    if (removeIndex != -1) {
                                        self.parameters.selection.selectedItems.splice(removeIndex, 1);
                                    }
                                } else if (columnData.$ncColumnSelected != null && columnData.$ncColumnSelected == true) {
                                    selectedCount++;
                                }
                            } else {
                                cantChangeSelection++;
                            }
                        }
                        if (selectedCount != 0 && notSelectedCount != 0) {
                            self.parameters.selection.allItemsSelected = false;
                        }
                        else if (selectedCount == fullList.length - cantChangeSelection) {
                            self.parameters.selection.allItemsSelected = true;
                        }
                        else if (notSelectedCount == fullList.length - cantChangeSelection) {
                            self.parameters.selection.allItemsSelected = null;
                        }
                    },
                    unselectItem: function (columnData) {
                        self.settings.events.broadcastEvent(ncGridEventNames.ncGridUnselectItemBefore, { data: columnData });
                        columnData[self.parameters.selection.selectedPropertyName] = false;
                        var unselectIndex = self.parameters.selection.selectedItems.indexOf(columnData);
                        self.parameters.selection.selectedItems.splice(unselectIndex, 1);
                        self.settings.selection.checkSelectPage();
                        self.settings.selection.checkSelectAll();

                        self.settings.events.broadcastEvent(ncGridEventNames.ncGridUnselectItemAfter, { data: columnData });
                    },
                    unselectPage: function () {
                        self.settings.events.broadcastEvent(ncGridEventNames.ncGridUnselectPageItemsBefore, { items: self.parameters.selection.selectedItems });
                        if (self.parameters.storage.sortedData == null) { return; }

                        self.settings.mapping.getFullPageData().forEach(function (element) {
                            element[self.parameters.selection.selectedPropertyName] = false;
                            var removeIndex = self.parameters.selection.selectedItems.indexOf(element);
                            if (removeIndex != -1) {
                                self.parameters.selection.selectedItems.splice(removeIndex, 1);
                            }
                        });
                        self.parameters.selection.pageItemsSelected = false;
                        self.settings.selection.checkSelectPage();
                        self.settings.events.broadcastEvent(ncGridEventNames.ncGridUnselectPageItemsAfter, { items: self.parameters.selection.selectedItems });
                    },
                    checkSelectPage: function () {
                        if (!self.parameters.selection.isSelectPageEnabled) {
                            self.parameters.selection.pageItemsSelected = null;
                            return;
                        }
                        var selectedCount = 0;
                        var notSelectedCount = 0;
                        var cantChangeSelection = 0;
                        var fullPageList = self.settings.mapping.getFullPageData();
                        for (var index = 0; index < fullPageList.length; index++) {
                            var columnData = fullPageList[index];
                            if (self.settings.selection.canChangeSelection(columnData)) {
                                if (columnData[self.parameters.selection.selectedPropertyName] == null || columnData[self.parameters.selection.selectedPropertyName] == false) {
                                    notSelectedCount++;
                                } else if (columnData.$ncColumnSelected != null && columnData.$ncColumnSelected == true) {
                                    selectedCount++;
                                }
                            } else {
                                cantChangeSelection++;
                            }
                        }
                        if (selectedCount != 0 && notSelectedCount != 0) {
                            self.parameters.selection.pageItemsSelected = false;
                        }
                        else if (selectedCount == fullPageList.length - cantChangeSelection) {
                            self.parameters.selection.pageItemsSelected = true;
                        }
                        else if (notSelectedCount == fullPageList.length - cantChangeSelection) {
                            self.parameters.selection.pageItemsSelected = null;
                        }
                    },
                    selectPage: function () {
                        self.settings.events.broadcastEvent(ncGridEventNames.ncGridSelectPageItemsBefore, { items: self.parameters.selection.selectedItems });
                        self.parameters.selection.pageItemsSelected = !self.parameters.selection.pageItemsSelected;
                        if (self.parameters.selection.pageItemsSelected == false) {
                            self.settings.selection.unselectPage();
                        }
                        else {
                            self.parameters.selection.selectedItems = [];
                            self.settings.mapping.getFullPageData().forEach(function (columnData) {
                                if (self.settings.selection.canChangeSelection(columnData)) {
                                    var selectState = self.settings.selection.columnSelect(columnData, true);
                                    columnData[self.parameters.selection.selectedPropertyName] = selectState;
                                    if (selectState) {
                                        self.parameters.selection.selectedItems.push(columnData);
                                    }
                                }
                            });
                            self.parameters.selection.pageItemsSelected = true;
                        }
                        self.settings.selection.checkSelectPage();
                        self.settings.events.broadcastEvent(ncGridEventNames.ncGridSelectPageItemsAfter, { items: self.parameters.selection.selectedItems });
                    },
                    selectItem: function (columnData) {
                        self.settings.events.broadcastEvent(ncGridEventNames.ncGridSelectItemBefore, { data: columnData });
                        if (self.settings.selection.canChangeSelection(columnData)) {
                            if (columnData[self.parameters.selection.selectedPropertyName] == true) {
                                self.parameters.selection.pageItemsSelected = false;
                                var unselectIndex = self.parameters.selection.selectedItems.indexOf(columnData);
                                if (unselectIndex != -1) {
                                    self.parameters.selection.selectedItems.splice(unselectIndex, 1);
                                }
                            }
                            columnData[self.parameters.selection.selectedPropertyName] = self.settings.selection.columnSelect(columnData, columnData[self.parameters.selection.selectedPropertyName]);
                            if (self.parameters.selection.selectedItems.indexOf(columnData) == -1) {
                                self.parameters.selection.selectedItems.push(columnData);
                            }
                            self.settings.selection.checkSelectPage();
                            self.settings.selection.checkSelectAll();
                        }
                        self.settings.events.broadcastEvent(ncGridEventNames.ncGridSelectItemAfter, { data: columnData });
                    },
                    columnIsSelelted: function (columnData) {
                        return columnData[self.parameters.selection.selectedPropertyName];
                    },
                    columnSelect: function (columnData, newColumnSelectionState) {
                        if (columnData[self.parameters.selection.selectedPropertyName] == null) {
                            return columnData[self.parameters.selection.selectedPropertyName] = true;
                        }
                        return columnData[self.parameters.selection.selectedPropertyName] = newColumnSelectionState;
                    },
                    canChangeSelection: function (columnData) {
                        return true;
                    }
                },
                ordering: {
                    disable: function () {
                        self.parameters.ordering.alreadySorted = false;
                        for (var entityKey in self.parameters.ordering.usedEntities) {
                            self.parameters.ordering.usedEntities[entityKey].className = self.parameters.ordering.notActiveClassName;
                            self.parameters.ordering.usedEntities[entityKey].descending = null;
                            self.parameters.ordering.usedEntities[entityKey].vector = self.parameters.ordering.ascMarker;
                        }
                        self.parameters.ordering.isActive = false;
                        self.settings.pagination.setPage(1);
                    },
                    set: function (orderEntity) {
                        self.parameters.mapping.isLoading = true;
                        $timeout(function () {
                            self.parameters.ordering.alreadySorted = false;
                            self.settings.events.broadcastEvent(ncGridEventNames.ncGridChangeOrderBefore);
                            for (var entityKey in self.parameters.ordering.usedEntities) {
                                if (self.parameters.ordering.usedEntities[entityKey].propertyName != orderEntity.propertyName) {
                                    self.parameters.ordering.usedEntities[entityKey].className = self.parameters.ordering.notActiveClassName;
                                    self.parameters.ordering.usedEntities[entityKey].vector = self.parameters.ordering.ascMarker;
                                    self.parameters.ordering.usedEntities[entityKey].descending = false;
                                    self.parameters.ordering.isActive = true;
                                } else {
                                    self.parameters.ordering.usedEntities[entityKey].descending = (orderEntity.descending == null || orderEntity.descending == true) ? false : true;
                                    self.parameters.ordering.usedEntities[entityKey].vector = !orderEntity.descending ? self.parameters.ordering.ascMarker : self.parameters.ordering.descMarker;
                                    self.parameters.ordering.usedEntities[entityKey].className = self.parameters.ordering.activeClassName;
                                }
                            }
                            self.settings.pagination.setPage(1);
                            self.settings.events.broadcastEvent(ncGridEventNames.ncGridChangeOrderAfter);
                        });
                    },
                    getActiveEntity: function () {
                        if (self.parameters.ordering.isActive != false) {
                            for (var entityKey in self.parameters.ordering.usedEntities) {
                                if (self.parameters.ordering.usedEntities[entityKey].className == self.parameters.ordering.activeClassName) {
                                    return self.parameters.ordering.usedEntities[entityKey];
                                }
                            }
                        }
                        return null;
                    }
                },
                events: {
                    initEventScope: function (ncGridScope) {
                        self.ncGridScope = ncGridScope;
                        self.eventScope = ncGridScope.$new(true);
                        self.eventListenerDefer.resolve(self.eventScope);
                    },
                    broadcastEvent: function (eventName, eventArg) {
                        if (self.ncGridScope == null || self.eventScope == null) {
                            return;
                        }
                        self.eventScope.$broadcast(eventName, eventArg);
                    }
                }

            }
        }

        return instance;
    }]);

    ncGridModule.directive('ncGrid', ['$parse', function ($parse) {
        return {
            restrict: 'A',
            priority: 1001,
            scope: true,
            link: function (scope, element, iAttrs) {
                var tableParamsGetter = $parse(iAttrs.ncGrid);
                scope.$watch(tableParamsGetter, (function (arg) {
                    if (angular.isUndefined(arg)) {
                        return;
                    }
                    scope.$parameters = arg.parameters;
                    scope.$settings = arg.settings;
                    scope.$ncGridState = arg.ncGridState;
                    arg.ncGridScope = scope;
                    arg.settings.events.initEventScope(scope);
                    scope.$broadcast('ncGridParametersIsBinded');
                }));
                scope.scrollToTopOfGrid = function () {
                    var offset = $(element).offset();
                    var offsetTop = offset.top - 100;
                    $('html, body').animate({
                        scrollTop: offsetTop
                    }, 0);
                }
            }
        }
    }]);

    //#region Selection

    ncGridModule.directive('ncSelectAll', ['$parse', function ($parse) {
        return {
            restrict: "E",
            replace: true,
            scope: true,
            template: '<div class="has-checkbox no-label">' +
											'<input id="{{selectAllId}}" type="checkbox" data-ng-checked="$parameters.selection.allItemsSelected"' +
											'data-ng-class="isSelectedAllChilds()"  />' +
											'<label for="{{selectAllId}}" data-ng-class="{disabled:selectAllDisabled}" data-ng-click="onChangeSelectAll()"></label>' +
								 '</div>',
            link: function (scope, element, attrs) {
                scope.$on('ncGridParametersIsBinded', function () {
                    scope.$parameters.selection.isSelectAllEnabled = true;
                });

                scope.onChangeSelectAll = function () {
                    if (!scope.selectAllDisabled) {
                        scope.$settings.selection.selectAll();
                    }
                }
                scope.isSelectedAllChilds = function () {
                    if (scope.$parameters.selection.allItemsSelected == null) {
                        return '';
                    }
                    else if (!scope.$parameters.selection.allItemsSelected && scope.$parameters.selection.selectedItems.length > 0) {
                        return 'selected-childs';
                    }
                    return '';
                }
                attrs.$observe('disabled', function (val) {
                    scope.selectAllDisabled = val;
                });
                attrs.$observe('id', function (val) {
                    scope.selectAllId = val;
                });

                scope.$watch($parse(attrs.disabled), (function (newValue) {
                    if (newValue != null) {
                        scope.selectAllDisabled = newValue;
                    }

                }));
                scope.$watch($parse(attrs.id), (function (newValue) {
                    if (newValue != null) {
                        scope.selectAllId = newValue;
                    }
                }));
            }
        };
    }]);

    ncGridModule.directive('ncSelectPage', ['$parse', function ($parse) {
        return {
            restrict: "E",
            replace: true,
            scope: true,
            template: '<div class="has-checkbox no-label">' +
											'<input id="{{selectPageId}}" type="checkbox" data-ng-checked="$parameters.selection.pageItemsSelected"' +
											'data-ng-class="isSelectedPageChilds()"  />' +
											'<label for="{{selectPageId}}" data-ng-class="{disabled:selectPageDisabled}" data-ng-click="onChangeSelectPage()"></label>' +
								 '</div>',
            link: function (scope, element, attrs) {
                scope.$on('ncGridParametersIsBinded', function () {
                    scope.$parameters.selection.isSelectPageEnabled = true;
                });
                scope.onChangeSelectPage = function () {
                    if (!scope.selectPageDisabled) {
                        scope.$settings.selection.selectPage();
                    }
                }
                scope.isSelectedPageChilds = function () {
                    if (scope.$parameters.selection.pageItemsSelected == null) {
                        return '';
                    }
                    else if (!scope.$parameters.selection.pageItemsSelected && scope.$parameters.selection.selectedItems.length > 0) {
                        return 'selected-childs';
                    }
                    return '';
                }

                attrs.$observe('disabled', function (val) {
                    scope.selectPageDisabled = val;
                });
                attrs.$observe('id', function (val) {
                    scope.selectPageId = val;
                });

                scope.$watch($parse(attrs.disabled), (function (newValue) {
                    if (newValue != null) {
                        scope.selectPageDisabled = newValue;
                    }

                }));
                scope.$watch($parse(attrs.id), (function (newValue) {
                    if (newValue != null) {
                        scope.selectPageId = newValue;
                    }
                }));
            }
        };
    }]);

	ncGridModule.directive('ncColumnSelection', ['$parse', '$compile', '$timeout', function ($parse, $compile, $timeout) {
		return {
			restrict: "E",
			replace: true,
			scope: {
				id: "=id",
				data: "=data"
			},
			template: '<input type="checkbox" data-ng-change="onChange()"' +
							'data-ng-checked="data[propertyName]"' +
							'data-ng-model="data[propertyName]" />',
			link: function (scope, element, attrs) {
			    scope.$evalAsync(function () {
			        var idValue = (scope.id) ? scope.id.toString().replace(' ', '') : attrs.id;
			        element.attr('id', idValue);
			        scope.propertyName = (scope.$parent.$parameters) ? scope.$parent.$parameters.selection.selectedPropertyName :( scope.$parameters)?scope.$parameters.selection.selectedPropertyName:"";
			        scope.onChange = function() {
			            if (scope.data[scope.propertyName]) {
			                scope.$parent.$settings.selection.selectItem(scope.data);
			            } else {
			                scope.$parent.$settings.selection.unselectItem(scope.data);
			            }
			        }
			    });
			}
		};
	}]);

