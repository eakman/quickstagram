    $scope.dnsdetailsSubDomainChange = function (subdomainName) {
        $scope.domainName = subdomainName;
        window.location.href = '/Domains/DomainControlPanel/' + subdomainName + '/advancedns';
        // $scope.LoadAdvancedDNSView();
    }

    $scope.SaveClicked = false;
    $scope.formMailSettings = {};
    //var domainName = $location.absUrl().split('/').pop();
    $scope.HostCount = 0;
    $scope.pageHelper = pageHelper;//for call helpers methods from view
    $scope.pageNotification = new notificationService.instance();
    $scope.mailSettingsTTL = [{ name: 'Automatic', value: '1799' }, { name: '1 minute', value: '60' }, { name: '5 minute', value: '300' }, { name: '20 minute', value: '1200' }, { name: '30 minute', value: '1800' }, { name: '60 minute', value: '3600' }];

    $scope.group1 = {};
    $scope.group2 = {};
    $scope.group3 = {};
    $scope.group4 = {};
    $scope.group5 = {};
    $scope.mxe = {};


    $scope.mailOptionTypeList = [
            { name: 'No Email Service', value: 'no_email' },
            { name: 'Email Forwarding', value: 'email_forwarding' },
            { name: 'Custom MX Records', value: 'custom_mx' },
            { name: 'Simplified MX Record', value: 'mxe' },
            { name: 'Private Email', value: 'private_email' },
            { name: 'Gmail', value: 'gmail' }];

    var mailOptionType = {
        no_email: false,
        email_forwarding: false,
        custom_mx: false,
        mxe: false,
        private_email: false,
        gmail: false
    }

    $scope.mailOptionType = mailOptionType;

    $scope.mailsettings = { MailTypes: "no_email" }

    $scope.DnsHostRecordListViewModel = {}
    $scope.AddMoreMXRecords = function (actionType, intexval) {
        if (actionType == 'Add') {
            $scope.MXRecords.push({
                HostId: '',
                Address: '',
                FriendlyName: '',
                MXPref: '',
                TTL: '',
                Name: ''

            });
        }
        else if (actionType == 'Hide') {
            $scope.MXRecords.splice(intexval, 1);
        }
    }
    $scope.loadDefaultMailRecords = function () {
        $scope.showLoadPanelForMailSetting = true;
        $scope.mailSettingsPageBehavior = new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                instance.showLoadPanel = true;
                instance.showContent = false;
                instance.model = null;
                instance.pageNgGridSettings = new ncGridParams();
                instance.pageNgGridSettings.settings.getData = function ($defer, ncGridState) {
                    instance.filterStatusPropertyNames = [];
                    instance.filterFlagsPropertyNames = [];
                    httpRepository.domainDns.getEmailForwardingDefaultList(ncGridState, domainName).then(function (result) {
                        var dataLength = 0;
                        if (result.Result != null && result.Result.Data != null) {
                            if (result.Msg != '') {
                                instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(result.Msg,
                                {
                                    hasClose: true,
                                    isAutoHide: true
                                });
                            }
                            dataLength = result.Result.Data.length;
                            $scope.HostCount = dataLength;
                            for (var i = 0; i < dataLength; i++) {
                                result.Result.Data[i].chbId = "chbId" + i;
                            }
                            instance.pageNgGridSettings.parameters.mapping.isLazyLoading = instance.pageNgGridSettings.parameters.mapping.serverChunkSize <= result.Result.Data.length;
                            $defer.resolve(result.Result);
                            instance.model = instance.pageNgGridSettings.parameters.storage.requestData;

                        }
                        else {
                            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(result.Msg, {
                                hasClose: true,
                                isAutoHide: true
                            });
                        }

                    });
                }
                instance.pageNgGridSettings.settings.reload();

                instance.asyncStatus(pageHelper.AsyncStatus.Success);
            },
            onSuccess: function (params) {
                var instance = this.instance;

                instance.asyncStatus(pageHelper.AsyncStatus.Active);
                httpRepository.domainDns.getEmailSettingInfo(domainName).then(function (result) {
                    $scope.hostRecordLimit = result.HostRecordLimit;
                    switch (result.EmailType) {
                        case 'NONE':
                            $scope.mailsettings.MailTypes = $scope.mailOptionTypeList[0].value;
                            $scope.mailOptionChange($scope.mailOptionTypeList[0].value);
                            break
                        case 'FWD':
                            $scope.mailsettings.MailTypes = $scope.mailOptionTypeList[1].value;
                            $scope.mailOptionChange($scope.mailOptionTypeList[1].value);
                            break
                        case 'MX':
                            $scope.mailsettings.MailTypes = $scope.mailOptionTypeList[2].value;
                            $scope.mailOptionChange($scope.mailOptionTypeList[2].value);
                            var jsonHostList = JSON.parse(result.HostList);
                            if (jsonHostList.length > 0)
                            {
                                $scope.MXRecords = jsonHostList;
                            }                            
                            //if (jsonHostList[0] != null && jsonHostList[0] != undefined)
                            //    $scope.group1 = { RecordName: jsonHostList[0].FriendlyName, Host: jsonHostList[0].Name, MailServer: jsonHostList[0].Address, Priority: jsonHostList[0].MXPref, TTL: jsonHostList[0].TTL == '0' ? 1799 : jsonHostList[0].TTL };
                            //if (jsonHostList[1] != null && jsonHostList[1] != undefined)
                            //    $scope.group2 = { RecordName: jsonHostList[1].FriendlyName, Host: jsonHostList[1].Name, MailServer: jsonHostList[1].Address, Priority: jsonHostList[1].MXPref, TTL: jsonHostList[1].TTL == '0' ? 1799 : jsonHostList[1].TTL };
                            //if (jsonHostList[2] != null && jsonHostList[2] != undefined)
                            //    $scope.group3 = { RecordName: jsonHostList[2].FriendlyName, Host: jsonHostList[2].Name, MailServer: jsonHostList[2].Address, Priority: jsonHostList[2].MXPref, TTL: jsonHostList[2].TTL == '0' ? 1799 : jsonHostList[2].TTL };
                            //if (jsonHostList[3] != null && jsonHostList[3] != undefined)
                            //    $scope.group4 = { RecordName: jsonHostList[3].FriendlyName, Host: jsonHostList[3].Name, MailServer: jsonHostList[3].Address, Priority: jsonHostList[3].MXPref, TTL: jsonHostList[3].TTL == '0' ? 1799 : jsonHostList[3].TTL };
                            //if (jsonHostList[4] != null && jsonHostList[4] != undefined)
                            //    $scope.group5 = { RecordName: jsonHostList[4].FriendlyName, Host: jsonHostList[4].Name, MailServer: jsonHostList[4].Address, Priority: jsonHostList[4].MXPref, TTL: jsonHostList[4].TTL == '0' ? 1799 : jsonHostList[4].TTL };
                            break
                        case 'MXE':
                            $scope.mailsettings.MailTypes = $scope.mailOptionTypeList[3].value;
                            $scope.mailOptionChange($scope.mailOptionTypeList[3].value);
                            var jsonObj = JSON.parse(result.HostList);
                            if (jsonObj.length > 0)
                            {
                                $scope.mxe = { RecordName: jsonObj[0].FriendlyName, IPAddress: jsonObj[0].Address };
                            }                            
                            break
                        case 'OX':
                            $scope.mailsettings.MailTypes = $scope.mailOptionTypeList[4].value;
                            $scope.mailOptionChange($scope.mailOptionTypeList[4].value);
                            break
                        case 'GMAIL':
                            $scope.mailsettings.MailTypes = $scope.mailOptionTypeList[5].value;
                            $scope.mailOptionChange($scope.mailOptionTypeList[5].value);
                            break
                    }
                    $scope.showLoadPanelForMailSetting = false;
                });
                //$scope.showLoadPanelForMailSetting = false;
            },
            onActive: function (params) {
                var instance = this.instance;
                instance.showLoadPanel = false;
                instance.showContent = true;
            },
            onLoading: function (params) {
                var instance = this.instance;
            },
            onLocked: function (params) {
                var instance = this.instance;
            },
            onError: function (params) {
                var instance = this.instance;
                instance.showLoadPanel = false;
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
        });

        //$scope.showLoadPanelForMailSetting = false;
    }

    $scope.resetToDefault = function () {
        mailOptionType.no_email = false;
        mailOptionType.email_forwarding = false;
        mailOptionType.custom_mx = false;
        mailOptionType.mxe = false;
        mailOptionType.gmail = false;
        mailOptionType.private_email = false;
    }

    $scope.mailOptionChange = function (mailType) {
        $scope.SaveClicked = false;
        if (mailType == $scope.mailOptionTypeList[0].value) {
            $scope.resetToDefault();
            mailOptionType.no_email = true;
        }
        else if (mailType == $scope.mailOptionTypeList[1].value) {
            $scope.resetToDefault();
            mailOptionType.email_forwarding = true;
        }
        else if (mailType == $scope.mailOptionTypeList[2].value) {
            $scope.resetToDefault();
            mailOptionType.custom_mx = true;
        }
        else if (mailType == $scope.mailOptionTypeList[3].value) {
            $scope.resetToDefault();
            mailOptionType.mxe = true;
        }
        else if (mailType == $scope.mailOptionTypeList[4].value) {
            $scope.resetToDefault();
            mailOptionType.private_email = true;
        }
        else if (mailType == $scope.mailOptionTypeList[5].value) {
            $scope.resetToDefault();
            mailOptionType.gmail = true;
        }
        if (mailType == $scope.mailOptionTypeList[0].value) {
            $scope.resetToDefault();
            mailOptionType.no_email = true;
        }
    }

    $scope.MXValidation = function (mxRecordsDefaultId) {
        $scope.activeTab = mxRecordsDefaultId;
    }
    $scope.SaveHostRecords = function () {
        //var data = $scope.hostRecord;
        //var hostRecordList = [{}];
        $scope.activeTab = -1;
        var hostType = "";
        switch ($scope.mailsettings.MailTypes) {
            case $scope.mailOptionTypeList[0].value:
                //set no email service
                hostType = "NONE";
                break;
            case $scope.mailOptionTypeList[1].value:
                //set default email forwarding
                hostType = "FWD";
                break;
            case $scope.mailOptionTypeList[2].value:
                //set Custom mx               

                hostType = "MX";
                //  $scope.DnsHostRecordListViewModel = { HostList1: $scope.group1, HostList2: $scope.group2, HostList3: $scope.group3, HostList4: $scope.group4, HostList5: $scope.group5 };
                $scope.DnsHostRecordListViewModel.MailRecords = $scope.MXRecords;
                break;
            case $scope.mailOptionTypeList[3].value:
                //set MXE
                hostType = "MXE";
                $scope.DnsHostRecordListViewModel = { MxeInfo: $scope.mxe };
                break;
            case $scope.mailOptionTypeList[4].value:
                //Set Private email
                hostType = "OX";
                break;
            case $scope.mailOptionTypeList[5].value:
                //set gamil settings                
                hostType = "GMAIL";
                break;
        }

        if ($scope.formMailSettings.$valid && $scope.hostRecord.Verify) {
            $scope.showLoadPanelForMailSetting = true;
            httpRepository.domainDns.setEmailType(domainName, hostType, JSON.stringify($scope.DnsHostRecordListViewModel)).then(function (result) {
                if (result.message != '' && !result.isredirect) {
                    //instance.activeNotification =
                    $scope.pageNotification.stuckNotifications.addError(result.setEmaiTypeStatusDesc, {
                        hasClose: true,
                        isAutoHide: true
                    });
                    $scope.showLoadPanelForMailSetting = false;
                }

                if (result.isredirect)
                    window.location.href = result.redirecturl; //+ '/' + domainName;
                $scope.showLoadPanelForMailSetting = false;
            });
        }
    }

    //$scope.$watch('[MailServer1,Host1,Priority1,MailServer2,Host2,Priority2,MailServer3,Host3,Priority3,MailServer4,Host4,Priority4,MailServer5,Host5,Priority5]', function (newValue, oldValue)
    $scope.$watch('[group1.Host,group1.MailServer,group1.Priority]', function (newValue, oldValue) {
        $scope.SaveClicked = false;
        if (newValue[0] == "") {
            $group1.MailServer = "";
            $scope.formMailSettings.MailServer1 = "";
            $scope.formMailSettings.Priority1 = "";
            $scope.group1.show = false;
        }
        else if (newValue[1] == "") {
            $group1.Host = "";
            $scope.formMailSettings.Host1 = "";
            $scope.formMailSettings.Priority1 = "";
            $scope.group1.show = false;
        }
        else if (newValue[2] == "") {
            $group1.MailServer = "";
            $scope.formMailSettings.Host1 = "";
            $scope.formMailSettings.Priority1 = "";
            $scope.group1.show = false;
        }
    }, true);


    $scope.$watch('[group2.Host,group2.MailServer,group2.Priority]', function (newValue, oldValue) {
        $scope.SaveClicked = false;
        if (newValue[0] == "") {
            $group2.MailServer = "";
            $scope.formMailSettings.MailServer2 = "";
            $scope.formMailSettings.Priority2 = "";
            $scope.group2.show = false;
        }
        else if (newValue[1] == "") {
            $group2.Host = "";
            $scope.formMailSettings.Host2 = "";
            $scope.formMailSettings.Priority2 = "";
            $scope.group2.show = false;
        }
        else if (newValue[2] == "") {
            $group2.MailServer = "";
            $scope.formMailSettings.Host2 = "";
            $scope.formMailSettings.Priority2 = "";
            $scope.group2.show = false;
        }
    }, true);


    $scope.$watch('[group3.Host,group3.MailServer,group3.Priority]', function (newValue, oldValue) {
        $scope.SaveClicked = false;
        if (newValue[0] == "") {
            $group3.MailServer = "";
            $scope.formMailSettings.MailServer3 = "";
            $scope.formMailSettings.Priority3 = "";
            $scope.group3.show = false;
        }
        else if (newValue[1] == "") {
            $group3.Host = "";
            $scope.formMailSettings.Host3 = "";
            $scope.formMailSettings.Priority3 = "";
            $scope.group3.show = false;
        }
        else if (newValue[2] == "") {
            $group3.MailServer = "";
            $scope.formMailSettings.Host3 = "";
            $scope.formMailSettings.Priority3 = "";
            $scope.group3.show = false;
        }
    }, true);

    $scope.$watch('[group4.Host,group4.MailServer,group4.Priority]', function (newValue, oldValue) {
        $scope.SaveClicked = false;
        if (newValue[0] == "") {
            $group4.MailServer = "";
            $scope.formMailSettings.MailServer4 = "";
            $scope.formMailSettings.Priority4 = "";
            $scope.group4.show = false;
        }
        else if (newValue[1] == "") {
            $group4.Host = "";
            $scope.formMailSettings.Host4 = "";
            $scope.formMailSettings.Priority4 = "";
            $scope.group4.show = false;
        }
        else if (newValue[2] == "") {
            $group4.MailServer = "";
            $scope.formMailSettings.Host4 = "";
            $scope.formMailSettings.Priority4 = "";
            $scope.group4.show = false;
        }
    }, true);

    $scope.$watch('[group5.Host,group5.MailServer,group5.Priority]', function (newValue, oldValue) {
        $scope.SaveClicked = false;
        if (newValue[0] == "") {
            $group5.MailServer = "";
            $scope.formMailSettings.MailServer5 = "";
            $scope.formMailSettings.Priority5 = "";
            $scope.group5.show = false;
