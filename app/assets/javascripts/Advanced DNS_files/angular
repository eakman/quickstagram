ncUiModule.directive('ncCountriesDropDown', ['$compile', 'ncCountriesListService', function ( $compile, ncCountriesListService) {
    return {
        restrict: "E",
        replace: true,
        scope : {
            country: '=',
            text: '@'            
        },
        template: "<select ui-select2 ng-model='country'><option ng-repeat='cntry in countrieslist.CountriesList' value='{{cntry.ISOCountryCode}}'>{{cntry.CountryName}}</option></select>",
        link: function postLink(scope, element, attributes) {
            // executes one time for this directive
            var countriesListDetails = ncCountriesListService().then(function (data) {
                if (data != null) {
                    scope.countrieslist = data[0].Result;
                }
                else { throw "Error: Getting data is missed." }
            });
        }
    }
}]);

