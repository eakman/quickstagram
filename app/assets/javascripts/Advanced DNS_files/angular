app.controller('ca_AlternativeContactCtrl', [
	'$scope', '$rootScope', '$timeout', function($scope, $rootScope, $timeout) {
		$scope.ciraContactType = {
			CCO: 0,
			CCT: 1,
			RES: 2,
			GOV: 3,
			EDU: 4,
			ASS: 5,
			HOP: 6,
			PRT: 7,
			TDM: 8,
			TRD: 9,
			PLT: 10,
			LAM: 11,
			TRS: 12,
			ABO: 13,
			INB: 14,
			LGR: 15,
			OMK: 16,
			MAJ: 17
		};
		$scope.ciraWhois = {
			Full: 0,
			Private: 1
		};
		$scope.lang = {
			en: 0,
			fr: 1
		};

		$scope.agreement = {
			yes: "y",
			no: "n"
		};

		$scope.agreementversion = { v2: "2.0" }

		$scope.resources = DomainContactsRes;
		$scope.$on("InitExtendedAttributes", function(event, tldItem) {


			$scope.tldItem = tldItem;
			$scope.tldItem.form = $scope['form'];


			if (!tldItem.attributes.CaRegistrantAgrementValue)
				tldItem.attributes.CaRegistrantAgrementValue = $scope.agreement.no;

			if (!tldItem.attributes.CARegistrantAgreementVersion)
				tldItem.attributes.CARegistrantAgreementVersion = $scope.agreementversion.v2;

			if (!tldItem.attributes.CIRAWhois)
				tldItem.attributes.CIRAWhois = $scope.ciraWhois.Full;

			$scope.tldItem.attributes.cbAgreement = $scope.tldItem.attributes.CaRegistrantAgrementValue.toLowerCase() == $scope.agreement.yes;
			$scope.tldItem.attributes.cbHideWhoisData = $scope.tldItem.attributes.CIRAWhois == $scope.ciraWhois.Private;

			$scope.$watch('tldItem.attributes.CIRAType', function() {
				if ($scope.tldItem.form.ca_ciraLegalType) {
					$scope.tldItem.form.ca_ciraLegalType.$setValidity('required', tldItem.attributes.CIRAType > -1);
				}
			});
			$scope.$watch('tldItem.attributes.CIRAWhois', function() {
				if ($scope.tldItem.form.ca_ciraWhois) {
					$scope.tldItem.form.ca_ciraWhois.$setValidity('required', tldItem.attributes.CIRAWhois > -1);
				}

			});

			$scope.tldItem.prepareSave = function() {
				$scope.tldItem.attributes.CaRegistrantAgrementValue = ($scope.tldItem.attributes.cbAgreement) ? $scope.agreement.yes : $scope.agreement.no;
				$scope.tldItem.attributes.CIRAWhois = ($scope.tldItem.attributes.cbHideWhoisData) ? $scope.ciraWhois.Private : $scope.ciraWhois.Full;

				if (tldItem.attributes.CIRAType != $scope.ciraContactType.CCT
					&& tldItem.attributes.CIRAType != $scope.ciraContactType.RES
					&& tldItem.attributes.CIRAType != $scope.ciraContactType.ABO
					&& tldItem.attributes.CIRAType != $scope.ciraContactType.LGR)
					tldItem.attributes.cbHideWhoisData = null;
			}
		});


	}
]);;
app.controller('es_AlternativeContactCtrl', [
	'$scope', '$rootScope','$timeout', function($scope, $rootScope,$timeout) {
		$scope.idType = {
			GenericId: 0,
			VatId: 1,
			ResidentAlienId: 3,
		};
		
		$scope.legalType = {
			IND: 0,
			FIND: 1,
			LTD: 2,
			PLC: 3,
			PTNR: 4,
			LLP: 5,
			STRA: 6,
			RCHAR: 7,
			IP: 8,
			SCH: 9,
			GOV: 10,
			CRC: 11,
			STAT: 12,
			OTHER: 13,
			FCORP: 14,
			FOTHER: 15
		};


		$scope.adminType = {
			GenericId: 0,
			NationalId: 1,
			ResidentAlienId: 3,
		};

		$scope.legalFormType = {
			Individual: 1,
			EconomicInterestGroup: 39,
			Association: 47,
			SportsAssociation: 59,
			ProfessionalAssociation: 68,
			SavingsBank: 124,
			CommunityProperty: 150,
			CommunityofOwners: 152,
			OrderorReligiousInstitution: 164,
			Consulate: 181,
			PublicLawAssociation: 197,
			Embassy: 203,
			LocalAuthority: 229,
			SportsFederation: 269,
			Foundation: 286,
			MutualInsuranceCompany: 365,
			RegionalGovernmentBody: 434,
			CentralGovernmentBody: 436,
			PoliticalParty: 439,
			TradeUnion: 476,
			FarmPartnership: 510,
			PublicLimitedCompany: 524,
			Sports_Association: 525,
			CivilSociety: 554,
			GeneralPartnership: 560,
			GeneralandLimitedPartnership: 562,
			Cooperative: 566,
			WorkerownedCompany: 608,
			LimitedCompany: 612,
			SpanishOffice: 713,
			TemporaryAllianceofEnterprises: 717,
			WorkerownedLimitedCompany: 744,
			RegionalPublicEntity: 745,
			NationalPublicEntity: 746,
			LocalPublicEntity: 747,
			Others: 877,
			DesignationofOriginSupervisoryCouncil: 878,
			EntityManagingNaturalAreas: 879
		};

		$scope.resources = DomainContactsRes;
		$scope.$on("InitExtendedAttributes", function(event, tldItem) {
			$scope.tldItem = tldItem;
			$scope.tldItem.form = $scope['form'];

			$scope.$watch('tldItem.attributes.RegistrantIdType', function() {
				if ($scope.tldItem.form.esIdType) {
					$scope.tldItem.form.esIdType.$setValidity('required', tldItem.attributes.RegistrantIdType > -1);
				}
			});
			$scope.$watch('tldItem.attributes.LegalFormType', function() {
				if ($scope.tldItem.form.esLegalFormType) {
					$scope.tldItem.form.esLegalFormType.$setValidity('required', tldItem.attributes.LegalFormType > 0);
					if ($scope.tldItem.form.esAcceptAgreement) {
						$timeout(function() {
							 $scope.tldItem.form.esAcceptAgreement.$setValidity('required', tldItem.attributes.AcceptAgreement == true);
						});
					}

				}
			});
			$scope.$watch('tldItem.attributes.AdminIdType', function() {
				if ($scope.tldItem.form.esAdminType) {
					$scope.$evalAsync(function () {
						$scope.tldItem.form.esAdminType.$setValidity('required', tldItem.attributes.AdminIdType > -1);
					});
				}
			});
			$scope.$watch('tldItem.attributes.AcceptAgreement', function () {
				if ($scope.tldItem.form.esAcceptAgreement) {
					$scope.tldItem.form.esAcceptAgreement.$setValidity('required', tldItem.attributes.AcceptAgreement == true);
				}
			});
			tldItem.prepareSave = function() {
				if (tldItem.attributes.TldName != 'ES') {
					tldItem.attributes.AdminId = null;
					tldItem.attributes.AdminIdType = null;
				}
				if (tldItem.attributes.LegalFormType != 1) {
					tldItem.attributes.AcceptAgreement = "false";
				}
			};

		});
	}
]);;
app.controller('fr_AlternativeContactCtrl', ['$scope', '$rootScope', 'pageHelper', '$filter', '$timeout', function ($scope, $rootScope, pageHelper, $filter, $timeout) {

	$scope.$on("InitExtendedAttributes", function (event, tldItem) {
		$scope.tldItem = tldItem;
		$scope.tldItem.form = $scope['form'];

		if (tldItem.attributes.RegistrantBirthplace != null) {
			var selectedCountry = angular.copy(tldItem.attributes.RegistrantBirthplace.toString());
			$timeout(function () {
				if (selectedCountry.length > 2) {
					$scope.tldItem.attributes.PlaceOfBirth = "FR";
					var idx = selectedCountry.indexOf(',');
					if (idx > -1) {
						$scope.tldItem.attributes.CityOfBirth = selectedCountry.substring(idx+1, selectedCountry.length);
						$scope.tldItem.attributes.PostalCodeOfBirth = selectedCountry.substring(0, idx);
					} else {
						$scope.tldItem.attributes.CityOfBirth = selectedCountry;
						$scope.tldItem.attributes.PostalCodeOfBirth = '';
					}

				} else {
					$scope.tldItem.attributes.PlaceOfBirth = selectedCountry;
					$scope.tldItem.attributes.CityOfBirth = '';
					$scope.tldItem.attributes.PostalCodeOfBirth = '';
				}
			});
		}


		var savedBirthDate = null;
		var savedRegistrantJoDate = null;
		var savedRegistrantJoDateDec = null;
		
		if ($scope.tldItem.attributes.RegistrantBirthDate != null) {
			savedBirthDate = pageHelper.Date.dateFromJson($scope.tldItem.attributes.RegistrantBirthDate);
			$scope.tldItem.attributes.RegistrantBirthDate = $filter('date')(pageHelper.Date.dateFromJson($scope.tldItem.attributes.RegistrantBirthDate), 'yyyy/MM/dd');
		}
		if ($scope.tldItem.attributes.RegistrantJoDatePub != null) {
			savedRegistrantJoDate = pageHelper.Date.dateFromJson($scope.tldItem.attributes.RegistrantJoDatePub);
			$scope.tldItem.attributes.RegistrantJoDatePub = $filter('date')(pageHelper.Date.dateFromJson($scope.tldItem.attributes.RegistrantJoDatePub), 'yyyy/MM/dd');
		}
		if ($scope.tldItem.attributes.RegistrantJoDateDec != null) {
			savedRegistrantJoDateDec = pageHelper.Date.dateFromJson($scope.tldItem.attributes.RegistrantJoDateDec);
			$scope.tldItem.attributes.RegistrantJoDateDec = $filter('date')(pageHelper.Date.dateFromJson($scope.tldItem.attributes.RegistrantJoDateDec), 'yyyy/MM/dd');
		}

		$scope.$watch('tldItem.attributes.FRLegalType', function (newValue) {
			$scope.tldItem.form.fr_RegistrantType.$setValidity('required', $scope.tldItem.attributes.FRLegalType > 0);
			if (newValue == '2') {
				$('#fr_DateOfBirth').daterangepicker({
						minDate: new Date('1900/01/01'),
						startDate: (savedBirthDate == null) ? new Date() : savedBirthDate,
						maxDate: new Date(),
						singleDatePicker: true,
						showDropdowns: true
					},
					function (start, end, label) {
						$scope.tldItem.attributes.RegistrantBirthDate = $filter('date')(new Date($('#fr_DateOfBirth').val()), 'yyyy/MM/dd');
						$scope.$apply();
					});
			}
			else if (newValue == '1') {
				$('#fr_GazettePublishedOn').daterangepicker({
					minDate: new Date('1900/01/01'),
					startDate: (savedRegistrantJoDate == null) ? new Date() : savedRegistrantJoDate,
					maxDate: new Date(),
					singleDatePicker: true,
					showDropdowns: true
				},
					function (start, end, label) {
						$scope.tldItem.attributes.RegistrantJoDatePub = $filter('date')(new Date($('#fr_GazettePublishedOn').val()), 'yyyy/MM/dd');
						$scope.$apply();
					});

				$('#fr_AssociationDeclaredOn').daterangepicker({
					minDate: new Date('1900/01/01'),
					startDate: (savedRegistrantJoDateDec == null) ? new Date() : savedRegistrantJoDateDec,
					maxDate: new Date(),
					singleDatePicker: true,
					showDropdowns: true
				},
				function (start, end, label) {
					$scope.tldItem.attributes.RegistrantJoDateDec = $filter('date')(new Date($('#fr_AssociationDeclaredOn').val()), 'yyyy/MM/dd');
					$scope.$apply();
				});

			}
		});

		tldItem.prepareSave = function () {
			// cleanup old values
			if (tldItem.attributes.FRLegalType != 1)
				tldItem.attributes.RegistrantLegalId = null;
			if (tldItem.attributes.PlaceOfBirth == 'FR')
				tldItem.attributes.RegistrantBirthplace = tldItem.attributes.PostalCodeOfBirth + ',' + tldItem.attributes.CityOfBirth;
			else
				tldItem.attributes.RegistrantBirthplace = tldItem.attributes.PlaceOfBirth;

			if (tldItem.attributes.FRLegalType != 2) {
				tldItem.attributes.RegistrantBirthDate = null;
				tldItem.attributes.RegistrantBirthplace = null;
			}
		}


	});
	

	$scope.countries = $rootScope.countries;
}]);

;
