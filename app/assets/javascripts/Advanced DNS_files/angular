                "VT": ["VT", "Vermont"],
                "VA": ["VA", "Virginia"],
                "WA": ["WA", "Washington"],
                "WV": ["WV", "West Virginia"],
                "WI": ["WI", "Wisconsin"],
                "WY": ["WY", "Wyoming"],
                "DC": ["DC", "Washington, D.C", "Washington D.C", "Washington DC", "Washington, DC"],
                "AS": ["AS", "American Samoa"],
                "UM": ["UM", "Minor Outlying Islands"],
                "MP": ["MP", "Northern Mariana Islands"],
                "PR": ["PR", "Puerto Rico"],
                "VI": ["VI", "Virgin Islands"],
                "GU": ["GU", "Guam"],
                "FM": ["FM", "Federated States of Micronesia"],
                "MH": ["MH", "Marshall Islands"],
                "PW": ["PW", "Palau"],
                "AE": ["AE", "Armed Forces Europe"],
                "AP": ["AP", "Armed Forces Pacific"],
                "AA": ["AA", "Armed Forces Americas"]


            }
        },
        "CA": {
            // http://www.geopostcodes.com/Canada
            "states": {
                "AB": ["AB", "Alberta"],
                "BC": ["BC", "British Columbia"],
                "MB": ["MB", "Manitoba"],
                "NB": ["NB", "New Brunswick"],
                "NL": ["NL", "Newfoundland & Labrador"],
                "NS": ["NS", "Nova Scotia"],
                "ON": ["ON", "Ontario"],
                "PE": ["PE", "Prince Edward Island"],
                "QC": ["QC", "Quebec"],
                "SK": ["SK", "Saskatchewan"],
                "NT": ["NT", "Northwest Territories"],
                "NU": ["NU", "Nunavut"],
                "YT": ["YT", "Yukon"]
            }
        }
    };
    return {
        require: 'ngModel',
        link: function (scope, element, attrs, modelCtrl) {
            modelCtrl.$parsers.push(function (inputvalue) {
                // this next if is necessary for when using ng-required on your input. 
                // In such cases, when a letter is typed first, this parser will be called
                // again, and the 2nd time, the value will be undefined
                var selectedCountry = attrs.selectedCountry;
                var _country = countries[selectedCountry]
                if (_country != null)
                {
                    validateState = true;
                    var states = _country.states
                    var currentState = "";
                    var state = states[inputvalue];
                    for (var s in states)
                    {
                        for (var t in states[s])
                        {
                            if (t != "sortOn")
                            {
                                currentState = states[s][t].replace(/[^a-zA-Z0-9]/g, '').toLowerCase()
                                if (inputvalue.toLowerCase() === currentState)
                                {
                                    modelCtrl.$setValidity('invalidstate', true)
                                    modelCtrl.$setViewValue(s);
                                    modelCtrl.$render();
                                   return s;
                                }

                            }
        

                        }
                    }
                    modelCtrl.$setValidity('invalidstate', false)
                    modelCtrl.$setViewValue(inputvalue);
                    modelCtrl.$render();
                    return inputvalue;

                }
                else
                {
                    modelCtrl.$setValidity('invalidstate', true)
                    //modelCtrl.$setViewValue(inputvalue);
                    //modelCtrl.$render();
                    return inputvalue;
                }
              

                
        
            });
        }
    };
}]);;
app.directive('ncCategoriesDropDown', ['$compile', function ($compile) {
    return {
        restrict: 'A',
        replace: false,
        scope: { selectChange: '=', createItem: '=', removeItem: '=' },
        link: function (scope, elm, attrs, ctrl) {
            var elem = elm;
            var idValue = attrs.angularid;
            $(elem).attr('id', attrs.angularid)
            if (attrs.angularcategoryid != undefined && attrs.angularcategoryid != "0")
                $(elem).attr('value', attrs.angularcategoryid)
            $(elem).addClass('select2-categories select2-offscreen');
            var initValues = attrs.initvalues;
            if (initValues != '')
                initAddCategories(idValue, eval(initValues));
            $(elem).on("change", function (e) {
                var data = $(this).data();
                if (e.val != undefined) {
                    var parameters = eval($(elem).data('parameters'))

                    if (e.added != undefined) {
                        if (e.added.id != -1) {
                            scope.selectChange(e.added.id, e.added.text, parameters);

                            data.angularcategoryid = e.added.id;
                        }

                        else
                            scope.createItem(e.added.id, e.added.text, parameters);
                    }
                    if (e.removed != undefined) {
                        scope.removeItem(e.removed.id, e.removed.text, parameters);
                    }

                }
                else {
                    $(elem).attr('value', data.angularcategoryid)
                    $(this).select2("val", data.angularcategoryid);
                }


            });

            $(elem).on("select2-opening", function () {
                var data = $(this).data();
                if (data.angularcategoryid == 0 && data.select2cache_val != '') {
                    data.angularcategoryid = data.select2cache_val;
                }
                $(this).data('select2cache_val', data.angularcategoryid);
                $(this).data('select2cache_newval', data.angularcategoryid);
                $(this).data('select2cache_opened', 'true');
                $(this).data('select2cache_text', $(this).select2('data').text);
                $(this).select2("val", '');
            });

            $(elem).on("select2-close", function () {
                var data = $(this).data();
                $this = $(this);
                if (data.select2cache_newval != "")
                    $(this).select2("val", data.select2cache_newval);
                else
                    $(this).select2("val", data.angularcategoryid);

            })
            $(elem).on("select2-focus", function (e) {
                var sel2 = $(this).data('select2');
                var opened = $(this).data('select2cache_opened');
                setTimeout(function () {
                    if (!sel2.opened() && (opened == undefined || opened == 'false')) sel2.open();
                }, 0);
            })
            $(elem).on("select2-selecting", function (e) {
                $(this).data('select2cache_newval', e.val);
            });

        }

    };
}]);

app.directive('ncDomainCategories', ['$compile', '$timeout', 'sanitizeHtmlService', '$filter', function ($compile, $timeout, sanitizeHtmlService, $filter) {
    return {
        restrict: 'E',
        scope: {
            placeholder: "@",
            categoryId: "=",
			initCategoryName: "=",
            categories: "=",
            onCreate: "=create",
            onChange: "=change",
            onRemove: "=remove"
        },
        template: '<div class="select2-container select2-container-multi select2-categories">' +
											'<ul class="select2-choices">' +
												'<li class="select2-search-choice" data-ng-if="categoryId">' +
													'<div data-ng-bind="categoryName"></div>' +
													'<a href="" class="select2-search-choice-close" tabindex="-1"></a>' +
												'</li>' +
												'<li class="select2-search-field" data-ng-if="!categoryId">' +
													'<input type="text" spellcheck="false" class="select2-input select2-default" ng-value="::placeholder" >' +
												'</li>' +
											'</ul>',
        link: function (scope, element, attrs, ctrl) {
            var isBulk = (typeof (attrs.bulk) !== 'undefined');
            scope.select2Options = {
                placeholder: scope.placeholder,
                containerCssClass: 'select2-categories',
                dropdownCssClass: 'select2-categories',
                multiple: true,
                simple_tags: true,
                tags: scope.categories,
                maximumInputLength: 20,
                formatSelection: function (item) {
                    return sanitizeHtmlService(item.text);
                },
                formatResult: function (item) {
                    return item.html != undefined ? item.html : sanitizeHtmlService(item.text);
                },
                createSearchChoice: function (term, data) {
                    if ($(data).filter(function (index, itemValue) {
						if (itemValue.text != null && itemValue.text.localeCompare) {
								return itemValue.text.localeCompare(term) === 0;
                    }
						return false;

                    }).length === 0) {
                        var item = { id: -1, text: term, html: '<div class="create-category"><span>' + sanitizeHtmlService(term) + '</span><a href="" class="btn btn-green btn-small-uppercase">create</a></div>' };
                        return item;
                    }
                }
            };
            var isProcessing = true;
            var prevValue = scope.categoryId;
            var updateCategoryName = function () {
                var category = $filter('propertyFilter')(scope.categories, { 'id': scope.categoryId })[0];
                if (category) {
                    scope.categoryName = category.text;
                } else {
                	scope.categoryName = scope.initCategoryName || scope.categoryId;
                }
            }

            scope.$evalAsync(function () {
                updateCategoryName();
            });
            element.bind('click', function (e, arg) {
                if (!element.attr('rendered')) {
                    var isRemoveAction = angular.element(e.target).hasClass('select2-search-choice-close');
                    renderSelect2(isRemoveAction);
                    element.attr('rendered', true);
                }
            });
            scope.$watch('categoryId', function (newValue) {
                updateCategoryName();
            });


            var renderSelect2 = function (isRemoveAction) {
                var select2Element = element.select2(scope.select2Options);
                select2Element.select2('val', prevValue);

                scope.$watch('categoryId', function (newValue) {
                    if (select2Element.select2('val') != newValue && prevValue != newValue) {
                        //Added For Bug Fix(EAP-4243 : While adding a new category it displays -1)
                        if (newValue != '-1')
                            select2Element.select2('val', newValue);
                    }
                });
                select2Element.on('select2-focus', function (e, arg) {
                    if (!isBulk && select2Element.select2('val') && !isProcessing) {
                        var self = $(this);
                        $timeout(function () {
                            self.data('select2').open();
                        });
                    }
                    isProcessing = false;
                });
                select2Element.on("select2-opening", function () {
                    if (!isBulk) {
                        prevValue = $(this).select2("val");
                        $(this).select2("val", '');
                    }
                });

                select2Element.on("select2-close", function () {
                    if ($(this).select2("val") == '' && prevValue != null && !isBulk) {
                        $(this).select2("val", prevValue);
                    }
                });
                select2Element.on('change', function (e) {
                    if (e.val == scope.categoryId || e.val == prevValue) {
                        return;
                    }
                    var tempValue = e.val;
                    var self = $(this);
                    //Added For Bug Fix(EAP-4243 : While adding a new category it displays -1)
                    if (prevValue != '-1')
                        $(this).select2("val", prevValue);

                    scope.categoryId = e.val;
                    if (e.val != undefined) {
                        if (e.added != undefined) {
                            if (e.added.id != -1)
                                scope.onChange(e.added.text, e.added.id).then(function (result) {
                                    if (result.Error == false) {
                                        self.select2("val", [result.categoryId]);
                                        prevValue = e.val;
                                    } else {
                                        self.select2("val", prevValue);
                                    }
                                });
                            else
                                scope.onCreate(e.added.text, e.added.id).then(function (result) {
                                    if (result.Error == false) {
                                        self.select2("val", [result.categoryId]);
                                        prevValue = e.val;
                                    }
                                    else {
                                        self.select2("val", prevValue);
                                    }
                                });;
                        }
                        if (e.removed != undefined) {
                            scope.onRemove(e.removed.text, e.removed.id).then(function (result) {
                                if (result.Error == false) {
                                    self.select2("val", e.val);
                                    prevValue = e.val;
                                }
                                else {
                                    self.select2("val", prevValue);
                                }
                                self.data('select2').blur();
                            });;
                        }
                    }
                    isProcessing = true;

                });

                if (isRemoveAction) {
                    $timeout(function () {
                        var crossElement = angular.element('#' + select2Element.data().select2.containerId).find('.select2-search-choice-close')
                        if (crossElement) {
                            crossElement.click();
                        }
                    });

                } else {
                    select2Element.data('select2').open();
                }
            }
        }
    }
}
]);

;
app.directive('ncSplitButton', ['$compile', '$templateCache', '$http', function ($compile, $templateCache, $http) {
