                //});

                //eventScope.$on(ncGridEventNames.ncGridUnselectPageItemsBefore, function (event, parameters) {
                //    $scope.actionPerforming = "loaded";
                //});
                //eventScope.$on(ncGridEventNames.ncGridUnselectPageItemsAfter, function (event, parameters) {
                //    $scope.actionPerforming = "loaded";
