    //#region Search
    ncGridModule.directive('ncGridSearch', ['$compile', 'ncGridTemplateService', 'ncGridTemplatesProperties', 'ncGridEventNames', function ($compile, ncGridTemplateService, ncGridTemplatesProperties, ncGridEventNames) {
        return {
            restrict: "E",
            replace: true,
            scope: false,
            link: function (scope, element, attrs) {
                try {
                    // since the scope is fully inherited we have to make sure that there will not the same property in any parent scope
                    scope.__disableSearch = scope.$eval(attrs['disable']);
                } catch (e) {}
                ncGridTemplateService(ncGridTemplatesProperties.searchTmpId).then(function (template) {
                    if (template != null) {
                        element = element.replaceWith($compile(template)(scope));
                    } else {
                        throw "Error: ncGrid search.";
                    }
                });
                scope.$on('ncGridParametersIsBinded', function () {
                    scope.$parameters.search.isEnabled = true;
                    if (scope.$parameters.search.serchPropertyNames.length > 0) {
                        scope.$watch('$parameters.search.value', function (newValue, oldValue) {
                            if (newValue != oldValue) {
                                scope.$settings.events.broadcastEvent(ncGridEventNames.ncGridSearchBefore, { newValue: newValue, oldValue: oldValue });

                                scope.$settings.pagination.setPage(1);
                                scope.scrollToTopOfGrid();
                                scope.$settings.events.broadcastEvent(ncGridEventNames.ncGridSearchAfter, { newValue: newValue, oldValue: oldValue });
                            }
                        });
                    }
                });

            }
        };
    }]);

    ncGridModule.filter('ncGridStringEntryFilter', function () {
        function checkAdvancedSearchValues(item, propertyName, searchValue) {
            var openBracketIndex = propertyName.indexOf("(");
            var closeBracketIndex = propertyName.indexOf(")");
            if (openBracketIndex > -1 && closeBracketIndex > -1) {
                var fnName = propertyName.slice(0, openBracketIndex);
                if (item[fnName]) {
                    return item[fnName](searchValue);
                }
            }
            return null;
        }

        return function (items, props) {
            var out = [];
            if (angular.isArray(items)) {
                items.forEach(function (item) {
                    var itemMatches = false;

                    var keys = Object.keys(props);
                    for (var i = 0; i < keys.length; i++) {
                        var prop = keys[i];
                        itemMatches = checkAdvancedSearchValues(item, prop, props[prop]);
                        if (itemMatches == null) {
                            var text = props[prop].toLowerCase();
                            var propertyNamespace = '';
                            propertyNamespace = prop.split('.');
                            if (propertyNamespace.length > 1) {
                                var value = item;
                                for (var index = 0; index < propertyNamespace.length; index++) {
                                    value = value[propertyNamespace[index]];
                                }
                                if (value != null && value.toString().toLowerCase().indexOf(text) !== -1 || (value == '' && text == '')) {
                                    itemMatches = true;
                                    break;
                                }
                            } else if (item[prop] && item[prop].toString().toLowerCase().indexOf(text) !== -1) {
                                itemMatches = true;
                                break;
                            }
                        } else if (itemMatches == true) {
                            break;
                        }
                    }

                    if (itemMatches) {
                        out.push(item);
                    }
                });
            } else {
                // Let the output be the input untouched
                out = items;
            }

            return out;
        };
    });
    //#endregion

    //#region Ordering

    ncGridModule.directive('ncRowOrdering', [function () {
        return {
            restrict: "E",
            scope: true,
            template: '<a href="" data-ng-class="{disabled:!$parameters.storage.isFullData}">' +
											'<span data-ng-bind="orderEntity.title"></span>' +
											'<span data-ng-class="orderEntity.className" data-ng-bind="orderEntity.vector">' +
								'</span></a>',
            link: function (scope, element, attrs) {
                scope.$on('ncGridParametersIsBinded', function () {
                    scope.orderEntity = { propertyName: attrs.value, reverse: null, title: attrs.title, className: scope.$parameters.ordering.notActiveClassName, vector: scope.$parameters.ordering.ascMarker }
                    scope.$parameters.ordering.usedEntities.push(scope.orderEntity);
                });
                element.bind('click', function () {
                    scope.$settings.ordering.set(scope.orderEntity);
                });
            }
        };
    }]);

    ncGridModule.filter('ncGridStableSorting', ['$parse', function ($parse) {
        return function (array, sortPredicate, descending, reverse) {
            if (descending == null) {
                descending = false;
            }
            if (sortPredicate != null && sortPredicate != '') {
                var get = $parse(sortPredicate);
                var loadFactor = 1.247;
                var step = array.length;
                var end = false;
                var t;
                while (!end) {
                    end = true;
                    step = parseInt(step /= loadFactor);
                    if (step < 1) {
                        step = 1;
                    }
                    for (var i = 0; i < array.length - 1; i++) {
                        if ((i + step) < array.length) {
                            var a = get(array[i]);
                            var b = get(array[i + step]);
                            if (a != null && b == null) {
                                t = array[i + step];
                                array[i + step] = array[i];
                                array[i] = t;
                                i++;
                            }
                            else if (a == null && b != null) {
                                t = array[i];
                                array[i] = array[i + step];
                                array[i + step] = t;
                                i++;
                            }
                            else if ((a > b && !descending) || (a < b && descending)) {
                                t = array[i];
                                array[i] = array[i + step];
                                array[i + step] = t;
                                end = false;
                            }
                        } else {
                            end = false;
                        }
                    }
                }
            }
            if (reverse) {
                array.reverse();
            }
            return array;
        };
    }
    ]);

    //#endregion

    //#region Filter
    ncGridModule.directive('ncFilter', ['ncGridEventNames', function (ncGridEventNames) {
        return {
            priority: 1000,
            restrict: "E",
            replace: true,
            scope: false,
            transclude: true,
            template: '<div class="dropdown has-icon icon-filter" data-ng-mouseleave="closeDropDown()" data-ng-class="{disabled:$parameters.mapping.isLoading || __disableFilter }">' +
							'<a href data-ng-class="{disabled:$parameters.mapping.isLoading, \'filter-active\': $parameters.filter.properties.length > 0}"><span>Filters</span></a>' +
							'<div class="dropdown-content">' +
									'<div class="form filter-dropdown" ng-transclude>' +
								 '</div>' +
								 '<div class="actions text-center">' +
										'<a href="" class="btn btn-small-uppercase" data-ng-click="applyFilter()">Apply</a>' +
										'<a href="" class="alt-action" data-ng-click="clearFilter()">Clear</a>' +
								 '</div>' +
							'</div>' +
				 '</div>',

            link: function (scope, element, attrs) {
                try {
                    // since the scope is fully inherited we have to make sure that there will not the same property in any parent scope
                    scope.__disableFilter = scope.$eval(attrs['disable']);
                } catch (e) {}

                //closeDropDown function modified as scope.closeDropDown() to call this function in data-ng-mouseleave event. Change for EAP-3370
                scope.closeDropDown = function () {
                    var x = element[0].className.split(' ');
                    if (x.indexOf('expanded') != -1) {
                        x.splice(x.indexOf('expanded'), 1);
                        element[0].className = x.join(' ');
                    }

                }
                //scope.filterAvailableItems = [];
                scope.filterFormsCount = 0;
                scope.clearFilter = function () {
                    scope.$settings.events.broadcastEvent(ncGridEventNames.ncGridFilterClearBefore, { properties: scope.$parameters.filter.properties });
                    scope.$parameters.filter.availableProperties.forEach(function (element) {
                        element.clearState();
                    });
                    scope.$parameters.filter.properties = [];
                    scope.$settings.pagination.setPage(1);
                    scope.scrollToTopOfGrid();
                    scope.$settings.events.broadcastEvent(ncGridEventNames.ncGridFilterClearAfter, { properties: scope.$parameters.filter.properties });
                    scope.closeDropDown();
                }
                scope.applyFilter = function () {
                    scope.$settings.events.broadcastEvent(ncGridEventNames.ncGridFilterApplyBefore, { properties: scope.$parameters.filter.properties });
                    scope.$parameters.filter.properties = [];
                    scope.$parameters.filter.availableProperties.forEach(function (element) {
                        if (element.getState() == true) {
                            if (Object.prototype.toString.call(element.propertyName) === '[object Array]') {
                                for (propIndex = 0; propIndex < element.propertyName.length; propIndex++) {
                                    scope.$parameters.filter.properties.push({ key: element.propertyName[propIndex], value: element.propertyValue, required: element.required });
                                }
                            }
                            else {
                                scope.$parameters.filter.properties.push({ key: element.propertyName, value: element.propertyValue, required: element.required });
                            }


                        }
                    });
                    scope.closeDropDown();
                    scope.$settings.pagination.setPage(1);
                    scope.scrollToTopOfGrid();
                    scope.$settings.events.broadcastEvent(ncGridEventNames.ncGridFilterApplyAfter, { properties: scope.$parameters.filter.properties });
                }

                scope.$on('ncGridParametersIsBinded', function () {
                    scope.$settings.actions.updateDropDownBtns();
                    initCheckboxFilter();
                    scope.$parameters.filter.isEnabled = true;
                });
            }
        };
    }]);
    ncGridModule.directive('ncFilterCheckboxForm', [function () {
        return {
            restrict: "E",
            replace: true,
            transclude: true,
            scope: {
                header: '='
            },
            template: "<span><h3 data-ng-bind='header'/><ng-transclude></ng-transclude></span>",
            link: function (scope) {
                scope.checkboxCount = 0;
            }
        };
    }]);
    ncGridModule.directive('ncFilterCheckboxItem', ['ncGridEmitPropertyScopeSearch', function (ncGridEmitPropertyScopeSearch) {
        return {
            restrict: "E",
            replace: true,
            scope: {
                header: '=header',
                propertyName: '=propertyname',
                propertyValue: '=propertyvalue'
            },
            template: '<div class="has-checkbox"><input type="checkbox" id="{{itemArg.elementId}}" data-ng-model="itemModel"><label for="{{itemArg.elementId}}" data-ng-bind="header"/></div>',
            link: function (scope) {
                scope.itemArg = {
                    elementId: null,
                    getState: function () {
                        return scope.itemModel;
                    },
                    clearState: function () {
                        scope.itemModel = false;
                    },
                    formHeader: null,
                    propertyName: scope.propertyName,
                    propertyValue: scope.propertyValue,
                    header: scope.header,
                    required: false
                }
                scope.$evalAsync(function () {
                    var checkboxFormScope = ncGridEmitPropertyScopeSearch(scope.$parent, 'header');
                    var filterScope = ncGridEmitPropertyScopeSearch(scope, 'filterFormsCount');
                    if (checkboxFormScope != null) {
                        scope.itemArg.formHeader = checkboxFormScope.header.toLowerCase().replace(" ", "");
                        scope.itemArg.elementId = scope.itemArg.formHeader + "_" + checkboxFormScope.checkboxCount++;
                    }
                    if (filterScope != null) {
                        filterScope.$parameters.filter.availableProperties.push(scope.itemArg);
                    }
                });
            }
        };
    }]);
    ncGridModule.directive('ncFilterRadioForm', [function () {
        return {
            restrict: "E",
            replace: true,
            transclude: true,
            scope: {
                header: '='
            },
            template: "<span><h3 data-ng-bind='header'/><ng-transclude></ng-transclude></span>",
            link: function (scope) {
                scope.radioCount = 0;
                scope.radioItems = [];
                scope.onChecked = function (elementId) {
                    scope.radioItems.forEach(function (item) {
                        item.checked = item.elementId == elementId;
                    });
                }
            }
        };
    }]);
    ncGridModule.directive('ncFilterRadioItem', ['ncGridEmitPropertyScopeSearch', function (ncGridEmitPropertyScopeSearch) {
        return {
            restrict: "E",
            replace: true,
            scope: {
                header: '=header',
                propertyName: '=propertyname',
                propertyValue: '=propertyvalue'
            },
            template: '<div class="has-radio" >' +
											'<input type="radio" id="{{itemArg.elementId}}" name={{itemArg.formHeader}}  ng-checked="itemArg.checked" >' +
											'<label for="{{itemArg.elementId}}" data-ng-click="onClick()" data-ng-bind="header" />' +
								 '</div>',
            link: function (scope, element) {

                scope.itemArg = {
                    elementId: null,
                    checked: false,
                    getState: function () {
                        return this.checked;
                    },
                    clearState: function () {
                        this.checked = false;
                    },
                    formHeader: null,
                    propertyName: scope.propertyName,
                    propertyValue: scope.propertyValue,
                    header: scope.header,
                    required: true
                }

                scope.$evalAsync(function () {
                    var radioFormScope = ncGridEmitPropertyScopeSearch(scope.$parent, 'header');
                    var filterScope = ncGridEmitPropertyScopeSearch(scope, 'filterFormsCount');
                    if (radioFormScope != null) {
                        scope.itemArg.formHeader = radioFormScope.header.toLowerCase().replace(" ", "");
                        scope.itemArg.elementId = scope.itemArg.formHeader + "_" + radioFormScope.radioCount++;
                        radioFormScope.radioItems.push(scope.itemArg);
                        scope.onClick = function () {
                            radioFormScope.onChecked(scope.itemArg.elementId);
                        }

                    }
                    if (filterScope != null) {
                        filterScope.$parameters.filter.availableProperties.push(scope.itemArg);

                    }
                });
            }
        };
    }]);

    //#endregion

    //#region Categories
    ncGridModule.directive('ncCategories', ['ncGridEventNames', '$timeout', function (ncGridEventNames, $timeout) {
        return {
            restrict: "E",
            replace: true,
            scope: true,
            transclude: true,
            template: ' <div class="dropdown has-icon icon-category" data-ng-mouseleave="closeDropDown()" data-ng-class="{disabled:$parameters.mapping.isLoading}">' +
											'<a href="" data-ng-class="{disabled:$parameters.mapping.isLoading}"><span>Categories</span></a>' +
											'<div class="dropdown-content">' +
													'<div class="filter-dropdown checkbox-control" >' +
														'<div class="has-checkbox">' +
															'<input type="checkbox" id="chb_categoriesSelectAll" ng-class="{\'selected-childs\':categoriesSelectAll==null}"' +
																		' data-ng-click="onSelectAll()" data-ng-model="categoriesSelectAll">' +
															'<label for="chb_categoriesSelectAll">All</label>' +

													'<ng-transclude></ng-transclude>' +
												 ' </div>' +
												 	'</div>' +
												 ' <div class="actions text-center">' +
														'  <a href="" class="btn btn-small-uppercase" data-ng-click="applyCategories()">Apply</a>' +
														'  <a href="" class="alt-action" data-ng-click="clearCategories()">Clear</a>' +
												 ' </div>' +
											'</div>' +
								 ' </div>',
            link: function (scope, element) {
                //closeDropDown function modified as scope.closeDropDown() to call this function in data-ng-mouseleave event. Change done for EAP-3370
                scope.closeDropDown = function () {
                    var x = element[0].className.split(' ');
                    if (x.indexOf('expanded') != -1) {
                        x.splice(x.indexOf('expanded'), 1);
                        element[0].className = x.join(' ');
                    }

                }

                scope.categoriesSelectAll = false;

                scope.checkSelectAll = function () {
                    var selectedItemCount = 0;
                    scope.$parameters.category.availableProperties.forEach(function (item) {
                        if (item.getState() == true) {
                            selectedItemCount++;
                        }
                    });
                    if (selectedItemCount == scope.$parameters.category.availableProperties.length) {
                        scope.categoriesSelectAll = true;
                    }
                    else if (selectedItemCount != 0 && selectedItemCount < scope.$parameters.category.availableProperties.length) {
                        scope.categoriesSelectAll = null;
                    } else {
                        scope.categoriesSelectAll = false;
                    }
                }

                scope.onSelectAll = function () {
                    scope.$parameters.category.availableProperties.forEach(function (item) {
                        item.scope.itemModel = scope.categoriesSelectAll;
                    });
                }

                scope.checkboxCount = 0;

                scope.clearCategories = function () {
                    scope.$settings.events.broadcastEvent(ncGridEventNames.ncGridCategoriesClearBefore, { properties: scope.$parameters.category.properties });
                    scope.$parameters.category.availableProperties.forEach(function (element) {
                        element.clearState();
                    });
                    scope.$parameters.category.properties = [];
                    scope.$settings.pagination.setPage(1);
                    scope.scrollToTopOfGrid();
                    scope.$settings.events.broadcastEvent(ncGridEventNames.ncGridCategoriesClearAfter, { properties: scope.$parameters.category.properties });
                    scope.closeDropDown();
                }

                scope.applyCategories = function () {
                    scope.$settings.events.broadcastEvent(ncGridEventNames.ncGridCategoriesApplyBefore, { properties: scope.$parameters.category.properties });
                    scope.$parameters.category.properties = [];
                    scope.$parameters.category.availableProperties.forEach(function (element) {
                        if (element.getState() == true) {
                            scope.$parameters.category.properties.push({ key: element.propertyName, value: element.propertyValue, required: false });
                        }
                    });
                    scope.$settings.pagination.setPage(1);
                    scope.scrollToTopOfGrid();
                    scope.$settings.events.broadcastEvent(ncGridEventNames.ncGridCategoriesApplyAfter, { properties: scope.$parameters.category.properties });
                    scope.closeDropDown();
                }

                scope.$on('ncGridParametersIsBinded', function () {
                    scope.$settings.actions.updateDropDownBtns();
                    scope.$parameters.category.isEnabled = true;
                });
            }
        };
    }]);

    ncGridModule.directive('ncCategoriesItem', ['ncGridEmitPropertyScopeSearch', function (ncGridEmitPropertyScopeSearch) {
        return {
            restrict: "E",
            replace: true,
            scope: {
                header: '=header',
                propertyName: '=propertyname',
                propertyValue: '=propertyvalue'
            },
            template: '<div class="has-checkbox"><input type="checkbox" id="{{itemArg.elementId}}" data-ng-model="itemModel"><label for="{{itemArg.elementId}}" data-ng-bind="header"/></div>',
            link: function (scope, index, iAttrs) {
                scope.itemArg = {
                    elementId: null,
                    getState: function () {
                        return scope.itemModel;
                    },
                    clearState: function () {
                        scope.itemModel = false;
                    },
                    scope: scope,
                    formHeader: null,
                    propertyName: scope.propertyName,
                    propertyValue: scope.propertyValue,
                    header: scope.header,
                    required: false
                }
                scope.$evalAsync(function () {
                    var categoriesScope = ncGridEmitPropertyScopeSearch(scope, 'checkboxCount');
                    if (categoriesScope != null) {
                        scope.itemArg.formHeader = 'ncCategory';
                        scope.itemArg.elementId = scope.itemArg.formHeader + "_" + categoriesScope.checkboxCount++;
                        categoriesScope.$parameters.category.availableProperties.push(scope.itemArg);

                        scope.$watch('itemModel', function (newValue, oldValue) {
                            if (newValue != oldValue) {
                                categoriesScope.checkSelectAll();
                            }
                        });

                    }
                });
            }
        };
    }]);


    //#endregion

    //#region Calendar
    ncGridModule.directive('ncCalendar', ['$parse', 'ncGridEventNames', function ($parse, ncGridEventNames) {
        return {
            restrict: "E",
            replace: true,
            scope: true,
            template: '<div class="dropdown has-icon icon-calendar daterange-field" data-ng-class="{disabled:$parameters.mapping.isLoading}">' +
											'<a class="show-calendar" data-ng-class="{disabled:$parameters.mapping.isLoading}" href=""> <span data-ng-show="startDate!=null && endDate!=null">{{startDate| date : "MM/dd/yyyy"}}-{{endDate| date : "MM/dd/yyyy"}}</span> </a>' +
								'</div>',
            link: function (scope, element, iAttrs) {
                function closeDropDown() {
                    var x = element[0].className.split(' ');
                    if (x.indexOf('expanded') != -1) {
                        x.splice(x.indexOf('expanded'), 1);
                        element[0].className = x.join(' ');
                    }
                }

                var initStart, initEnd;
                var daterangepickerElm = $(element[0].children[0]);
                scope.propertyName = iAttrs.propertyname;

                var calendarApplyClass = "calendar_apply_btn_" + scope.propertyName.toLowerCase();
                daterangepickerElm.daterangepicker({ applyClass: calendarApplyClass });

                daterangepickerElm.on('apply.daterangepicker', function (ev, picker) {
                    scope.$settings.events.broadcastEvent(ncGridEventNames.ncGridCalendarApplyBefore, { startDate: scope.startDate, endDate: scope.endDate });
                    scope.startDate = new Date(daterangepickerElm.data('daterangepicker').startDate);
                    scope.endDate = new Date(daterangepickerElm.data('daterangepicker').endDate);
                    scope.$parameters.calendar.activeEntity = { from: scope.startDate, to: scope.endDate };
                    scope.$parameters.calendar.isActive = true;
                    scope.$settings.pagination.setPage(1);
                    closeDropDown();
                    scope.$apply();
                    scope.$settings.events.broadcastEvent(ncGridEventNames.ncGridCalendarApplyAfter, { startDate: scope.startDate, endDate: scope.endDate });
                });

                var startDateGetter = $parse(iAttrs.startdate);
                scope.$watch(startDateGetter, (function (arg) {
                    if (angular.isUndefined(arg)) {
                        return;
                    }
                    initStart = arg;
                    scope.$parameters.calendar.propertyName = scope.propertyName;

                }));
                var endDateGetter = $parse(iAttrs.enddate);
                scope.$watch(endDateGetter, (function (arg) {
                    if (angular.isUndefined(arg)) {
                        return;
                    }
                    initEnd = arg;
                    scope.$parameters.calendar.propertyName = scope.propertyName;
                }));

                $('body').on('click', '.daterangepicker .resetBtn', function (ev) {
                    var applyBtn = $(this).siblings('.applyBtn');
                    if (applyBtn.hasClass(calendarApplyClass)) {
                        scope.$settings.events.broadcastEvent(ncGridEventNames.ncGridCalendarResetBefore, { startDate: scope.startDate, endDate: scope.endDate });
                        scope.startDate = null;
                        scope.endDate = null;
                        daterangepickerElm.data('daterangepicker').setStartDate(initStart);
                        daterangepickerElm.data('daterangepicker').setEndDate(initEnd);
                        scope.$parameters.calendar.activeEntity = null;
                        scope.$parameters.calendar.isActive = false;
                        scope.$settings.pagination.setPage(1);
                        closeDropDown();
                        scope.$apply();
                        scope.$settings.events.broadcastEvent(ncGridEventNames.ncGridCalendarResetAfter, { startDate: scope.startDate, endDate: scope.endDate });
                    }

                });

                scope.$on('ncGridParametersIsBinded', function () {
                    scope.$parameters.calendar.isEnabled = true;
                });
            }
        };
    }]);

    ncGridModule.filter('ncGridDateRangeByProperty', function () {
        //props=> {property: [string], from:[Date], to: [Date]}
        return function (items, props) {
            var out = [];
            if (angular.isArray(items) && props.property != null && props.from != null && props.to != null) {
                items.forEach(function (item) {
                    var itemMatches = false;

                    var prop = props.property;
                    var propertyNamespace = prop.split('.');
                    if (propertyNamespace.length > 1) {
                        var value = item;
                        for (var index = 0; index < propertyNamespace.length; index++) {
                            value = value[propertyNamespace[index]];
                        }
                        if (value != null && props.from <= value && props.to >= value) {
                            itemMatches = true;
                        }
                    } else if (item[prop] != null && props.from <= item[prop] && props.to >= item[prop]) {
                        itemMatches = true;
                    }

                    if (itemMatches) {
                        out.push(item);
                    }
                });
            } else {
                // Let the output be the input untouched
                out = items;
            }

            return out;
        };
    });

    //#endregion

    //#region Additionally

	ncGridModule.directive('ncGridRow', ['$timeout', '$compile', '$q', function ($timeout, $compile, $q) {
	    return function (scope, element, attributes) {
	        scope.$parameters.mapping.isNcRowDirective = true;
	        if (scope.$first) {
	            scope.$parameters.mapping.isRenderMoreProcessing = true;
	            scope.$parent.gridItemWatchers = [];
	            scope.$parent.renderDefer = $q.defer();
	        }
	        
	        scope.$parent.gridItemWatchers[scope.$index] = scope.$$watchers;
	        scope.$$watchers = [];

	        if (scope.$last) {
	            scope.$parent.renderDefer.resolve();
	            scope.$parameters.mapping.isRenderMoreProcessing = false;
	        }
	        scope.$parent.renderDefer.promise.then(function () {
	            scope.$$watchers = scope.$$watchers.concat(scope.$parent.gridItemWatchers[scope.$index]);
	        });
	    }
	}]);

