               if ($scope.TechContacts.CheckUseNamecheapContacts && ContactPanel == 'Tech') {
                   if (ddlPhoneCodeTechnical.length) {
                       $(ddlPhoneCodeTechnical).prop("disabled", true);
                   }
                   if (ddlCountryTechnical.length) {
                       $(ddlCountryTechnical).prop("disabled", true);
                   }
                   if (ddlFaxCodeTechnical.length) {
                       $(ddlFaxCodeTechnical).prop("disabled", true);
                   }
                   $scope.TechContacts.FirstName = "Namecheap";
                   $scope.TechContacts.LastName = "Support";
                   $scope.TechContacts.Address = "11400 W. Olympic Blvd. Suite 200";
                   $scope.TechContacts.Address1 = " ";
                   $scope.TechContacts.FaxNumber = "";
                   $scope.TechContacts.CompanyName = "Namecheap, Inc";
                   $scope.TechContacts.JobTitle = "NA";
                   params.Result.UserAddressInfoSection.Address.Phone = "+1.6613102107";
                   if (params.Result.UserAddressInfoSection.Address.Phone.indexOf('.') != -1) {

                       $scope.TechContacts.PhoneNumber = params.Result.UserAddressInfoSection.Address.Phone.split('.')[1];
                   }
                   params.Result.UserAddressInfoSection.Address.Fax = " ";

                   if (params.Result.UserAddressInfoSection.Address.Fax.indexOf('.') != -1) {
                       $scope.TechContacts.FaxNumber = params.Result.UserAddressInfoSection.Address.Fax.split('.')[1];
                   }

                   $scope.TechContacts.ZIPPostalCode = "90064";
                   $scope.TechContacts.StateProvince = "CA";
                   $scope.TechContacts.City = "Los Angeles";
                   $scope.TechContacts.PhoneNumberExt = "";
                   $scope.TechContacts.EmailAddress = "sslsupport@namecheap.com";
                   params.Result.UserAddressInfoSection.Address.Phone = "+1.6613102107";
                   if (params.Result.UserAddressInfoSection.Address.Phone.indexOf('.') != -1) {

                       $scope.TechContacts.PhoneCode = params.Result.UserAddressInfoSection.Address.Phone.split('.')[0].replace(/\+/g, "");
                   }
                   params.Result.UserAddressInfoSection.Address.Fax = " ";
                   if (params.Result.UserAddressInfoSection.Address.Fax.indexOf('.') != -1) {

                       $scope.TechContacts.FaxCode = params.Result.UserAddressInfoSection.Address.Fax.split('.')[0].replace(/\+/g, "");
                   }

                   if (ddlPhoneCodeTechnical.length) {
                       params.Result.UserAddressInfoSection.Address.Phone = "+1.6613102107";
                       if (params.Result.UserAddressInfoSection.Address.Phone.indexOf('.') != -1) {

                           ddlPhoneCodeTechnical.select2("val", params.Result.UserAddressInfoSection.Address.Phone.split('.')[0].replace(/\+/g, ""));

                       }
                       else
                           $(ddlPhoneCodeTechnical).prop("disabled", false);
                   }
                   $scope.TechContacts.Country = "US";
                   params.Result.UserAddressInfoSection.Address.Country = "US";
                   if (ddlCountryTechnical.length) {
                       ddlCountryTechnical.select2("val", params.Result.UserAddressInfoSection.Address.Country.toUpperCase());
                   }
                   params.Result.UserAddressInfoSection.Address.Fax = "";
                   if (ddlFaxCodeTechnical.length) {
                       if (params.Result.UserAddressInfoSection.Address.Fax.indexOf('.') != -1) {

                           ddlFaxCodeTechnical.select2("val", params.Result.UserAddressInfoSection.Address.Fax.split('.')[0].replace(/\+/g, ""));
                       }
                       //else
                       //    $(ddlFaxCodeTechnical).prop("disabled", false);
                   }
                   params.Result.UserAddressInfoSection.Address.PhoneExt = '';
                   if (params.Result.UserAddressInfoSection.Address.PhoneExt != '') {
                       $scope.TechContacts.PhoneExtCheckBox = true;
                       if ($("#PhSectionTechnical").length) {
                           $("#PhSectionTechnical").addClass("has-extension");
                       }
                       if ($("#PhSectionTechMin").length) {
                           $("#PhSectionTechMin").addClass("has-extension");
                       }
                   }
                   // $("#frmTechContacts").prop("disabled", true);
               }


               ContactPanel = '';
               var instance = this.instance;
               instance.asyncStatus(pageHelper.AsyncStatus.Active);

           },
           onActive: function (params) {

           }
       })



    // WHEN USER ENTER TEXTBOX AREA ONBLUR EVENT CALL ALSO CALL AJAX CALL AND RETURN RESULT.
    $scope.ParseCsr = new pageHelper.AsyncStateBehavior(
        {
            constructor: function () {
                    var instance = this.instance;
                    var byePassBeginEnd = 0;
                    instance.onBlur = function () {
                        if ($scope.SSLInfoSectionViewModel.CSRCode != undefined) {
                            var countBeginNewCertificate = ($scope.SSLInfoSectionViewModel.CSRCode.match(/-----BEGIN NEW CERTIFICATE REQUEST-----/g) || []).length;
                            var countBeginCertificate = ($scope.SSLInfoSectionViewModel.CSRCode.match(/-----BEGIN CERTIFICATE REQUEST-----/g) || []).length;
                            var countEndCertificate = (($scope.SSLInfoSectionViewModel.CSRCode.match(/-----END CERTIFICATE REQUEST-----/g) || []).length) || (($scope.SSLInfoSectionViewModel.CSRCode.match(/-----END NEW CERTIFICATE REQUEST-----/g) || []).length);
                            if (countBeginNewCertificate == 0 && countBeginCertificate == 0 && countEndCertificate == 0) // This check is used for parse csr without Begin & End tags.
                                byePassBeginEnd = 1;  
                            if ($scope.SSLInfoSectionViewModel.CSRCode != undefined && $scope.SSLInfoSectionViewModel.CSRCode != '' && (countBeginCertificate == 1 || countBeginNewCertificate == 1 || byePassBeginEnd == 1) && $scope.NextButtonClicked == false) {
                                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                                sslRepository.sslInfo.ParseCsr($scope.SSLInfoSectionViewModel.CSRCode, $scope.SSLInfoSectionViewModel.APIParameterValue, $scope.httpDCValidation, $scope.dnsDCValidation).then(function (result) {
                                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                            });
                        }
                    }


                }
            },
            onSuccess: function (params) {
                if ($scope.WebServer != $scope.SSLInfoRes.static_SelectOption)
                    $scope.sslnotification.alerts.clear();

                var instance = this.instance;
                if ($scope.SSLInfoSectionViewModel.PrimaryDomainDetail == null) {
                    $scope.SSLInfoSectionViewModel.PrimaryDomainDetail = {};
                }
                $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.CommonName = params.Result.CsrDetails.CommonName;
                $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.DomainName = params.Result.CsrDetails.DomainName;
                $scope.domainName = params.Result.CsrDetails.DomainName;
                if ($scope.SSLInfoSectionViewModel.ProviderName.toUpperCase() != 'COMODO' && $scope.SSLInfoSectionViewModel.Status.toUpperCase() == 'ACTIVE') {
                    params.Result.CsrDetails.DNSNames = null;
                }

                if (params.Result.CsrDetails.DNSNames != null && params.Result.CsrDetails.DNSNames != '') {


                    var splitDnsNames = params.Result.CsrDetails.DNSNames.split(',');
                    $scope.addonDomains = [];

                    for (var splitindex = 0; splitindex < $scope.SSLInfoSectionViewModel.SanCount ; splitindex++) {

                        var addonListItems = [];
                        if (splitDnsNames[splitindex] != undefined) {

                            addonListItems.CommonName = splitDnsNames[splitindex];
                        }
                        else {
                            addonListItems.CommonName = "";
                        }

                        addonListItems.DomainName = "";
                        addonListItems.ValidationType = "";
                        addonListItems.ValidationValue = "";
                        // addonListItems.disabled = true;

                            $scope.addonDomains.push(addonListItems);

                    }
                }
            },
            onLoading: function (params) {
                $scope.sslnotification.alerts.clear();
                var instance = this.instance;
                instance.activeNotification = $scope.sslnotification.stuckNotifications.addLoading('<B>Submitting CSR.</B> Please wait.', false);
                instance.isDisabled = true;
                instance.showError = false;
            },
            onError: function (params) {
                $scope.sslnotification.alerts.clear();
                $scope.sslnotification.alerts.addError($scope.ErrorMsgRes.error_Site_SummaryMessage, $scope.sslnotificationAlertArguments)

                if (params.Msg == 'noDomainName' || params.Msg == 'noCommonName') {
                    $scope.sslactivate.CSRCode.$setValidity('noDomainName', false);
                }
                else if (params.Msg == 'wildcard') {
                    $scope.sslactivate.CSRCode.$setValidity('enterwildcard', false);
                }
                else if (params.Msg == 'nonWildcard') {
                    $scope.sslactivate.CSRCode.$setValidity('enternonwildcard', false);
                }
                else if (params.Msg.indexOf('Domain in this CSR') > -1) {
                    $scope.errormessage = params.Msg;
                    $scope.sslactivate.CSRCode.$setValidity('errorDomain', false)
                }
                else {
                    $scope.sslactivate.CSRCode.$setValidity('CSRInvalid', false);
                }
                $('html, body').animate({ scrollTop: 0 }, 800);
            }
        })

    // ON NEXT BUTTON CLICK
    $scope.ValidateCsr = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.click = function () {
                if ($scope.SSLInfoSectionViewModel.CSRCode != undefined && $scope.SSLInfoSectionViewModel.CSRCode != '') {
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                    $scope.SSLInfoSectionViewModel.CSR = $scope.SSLInfoSectionViewModel.CSRCode;
                    $scope.SSLInfoSectionViewModel.SanDomainsDetail = [];
                    for (indexAddon = 0; indexAddon < $scope.addonDomains.length; indexAddon++) {
                        var SanDomainDetails = [];
                        SanDomainDetails.CommonName = $scope.addonDomains[indexAddon].CommonName;
                        SanDomainDetails.DomainName = $scope.addonDomains[indexAddon].DomainName;
                        SanDomainDetails.ValidationType = $scope.addonDomains[indexAddon].ValidationType;
                        SanDomainDetails.ValidationValue = $scope.addonDomains[indexAddon].ValidationValue;
                        $scope.SSLInfoSectionViewModel.SanDomainsDetail.push(SanDomainDetails)
                    }
                    $scope.SSLInfoSectionViewModel.SanDomainsDetail = $scope.addonDomains;
                    sslRepository.sslInfo.ValidateCsr($scope.SSLInfoSectionViewModel, $scope.addonDomains).then(function (result) {
                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                    });
                }

            }
        },
        onSuccess: function (params) {
            $scope.addonDomainCount = 0;
            for (var index = 0; index < $scope.addonDomains.length; index++) {
                if ($scope.addonDomains[index].CommonName != "" && $scope.addonDomains[index].CommonName != undefined) {
                    $scope.addonDomainCount += 1;
                }
            }
            var instance = this.instance;

            if ($scope.SSLInfoSectionViewModel.PrimaryDomainDetail == null)
                $scope.SSLInfoSectionViewModel.PrimaryDomainDetail = {};
            $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.CommonName = params.Result.CsrDetails.CommonName;
            $scope.primaryEmail = params.Result.CsrDetails.Email;
            $scope.Organisation = params.Result.CsrDetails.Organisation;
            $scope.Department = params.Result.CsrDetails.OrganisationUnit;
            $scope.Location = params.Result.CsrDetails.Locality
            $scope.State = params.Result.CsrDetails.State
            $scope.GetAndAssignCountryName(params.Result.CsrDetails.Country);
            $scope.wizardstep = 2;
            $scope.NextButtonClicked = false;
            $scope.CommonName = params.Result.CsrDetails.CommonName;
            $scope.ClearSummaryMsgAndScrollTop();


        },
        onLoading: function (params) {
            var instance = this.instance;
            $scope.sslnotification.alerts.clear();
            instance.activeNotification = $scope.sslnotification.stuckNotifications.addLoading('<B>Submitting CSR.</B> Please wait.', false);
            instance.isDisabled = true;
            instance.showError = false;
        },
        onError: function (params) {
            $scope.sslnotification.alerts.clear();
            //$scope.sslnotification.alerts.addError(params.Msg, $scope.sslnotificationAlertArguments)
            if (params.Msg == 'positiveSSLCantBeRenewals') {
                $scope.sslnotification.alerts.addError($scope.SSLInfoValidation.error_Site_Certificate_SpecialPromotionsCantBeRenewals, $scope.sslnotificationAlertArguments)
            }
            else {
                $scope.sslnotification.alerts.addError($scope.ErrorMsgRes.error_Site_SummaryMessage, $scope.sslnotificationAlertArguments)
            }

            if (params.Msg == 'noDomainName' || params.Msg == 'noCommonName') {
                $scope.sslactivate.CSRCode.$setValidity('noDomainName', false);
            }
            else if (params.Msg == 'invalidSanEntered') {
                $scope.sslactivate.addondomainField.$setValidity('invaliddomain', false);
            }
            else if (params.Msg == 'wildcard') {
                $scope.sslactivate.CSRCode.$setValidity('enterwildcard', false);
            }
            else if (params.Msg == 'nonWildcard') {
                $scope.sslactivate.CSRCode.$setValidity('enternonwildcard', false);
            }
            else if (params.Msg == 'noMultiDomain') {
                $scope.sslactivate.CSRCode.$setValidity('multidomainnotallowed', false);
            }
            else if (params.Msg == 'activateMoreDomain') {
                $scope.sslactivate.CSRCode.$setValidity('activateMoreDomain', false);
            }
                //else if (params.Msg == 'activationCertificateExpired') {
                //    $scope.sslactivate.CSRCode.$setValidity('activationCertificateExpired', false);
                //}

            else if (params.Msg == 'invalidDomainRenewal') {
                $scope.sslactivate.CSRCode.$setValidity('invalidDomainRenewal', false);
            }
            else if (params.Msg == 'samePrimaryDomainForRenewal') {
                $scope.sslactivate.CSRCode.$setValidity('samePrimaryDomainForRenewal', false);
            }
            else if (params.Msg == 'internalDomainNameNotAllowed') {
                $scope.sslactivate.CSRCode.$setValidity('internalDomainNameNotAllowed', false);
            }
            else if (params.Msg == 'sansParametersDoNotMatchWithCommonName') {
                $scope.sslactivate.CSRCode.$setValidity('sansParametersDoNotMatchWithCommonName', false);
            }
            else if (params.Msg == 'positiveSSLCantBeRenewals') {
                $scope.sslactivate.CSRCode.$setValidity('positiveSSLCantBeRenewals', false);
            }
            else if (params.Msg == 'specialPromotionsCantBeRenewals') {
                $scope.sslactivate.CSRCode.$setValidity('specialPromotionsCantBeRenewals', false);
            }
            else if (params.Msg == 'commonNameInCSRIsBlocked') {
                $scope.sslactivate.CSRCode.$setValidity('commonNameInCSRIsBlocked', false);
            }
            else if (params.Msg.indexOf('Domain in this CSR') > -1) {
                $scope.errormessage = params.Msg;
                $scope.sslactivate.CSRCode.$setValidity('errorDomain', false)
            }
            else {
                $scope.sslactivate.CSRCode.$setValidity('CSRInvalid', false);
            }
            $('html, body').animate({ scrollTop: 0 }, 800);
        }
    })

    //GETTING APPROVER EMAIL LIST FOR THE PRIMARY DOMAIN
    $scope.GetApproverEmailList = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.click = function (pageLoad) {

                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                sslRepository.sslInfo.GetApproverEmailList($scope.SSLInfoSectionViewModel.PrimaryDomainDetail.CommonName, $scope.SSLInfoSectionViewModel.APIParameterValue, 0).then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                });



            }
        },
        onSuccess: function (params) {
            if (params.Result.AprroverEmailList.length <= 10)
                $scope.PrimaryDomainIgnoreSearchOption = { minimumResultsForSearch: -1 }
            else
                $scope.PrimaryDomainIgnoreSearchOption = {}
            //if ($scope.SSLInfoSectionViewModel.Status != 'ACTIVE')
            //    $scope.primarydomainapproveremail = $scope.SSLInfoRes.static_SelectOption;
            //else
            //    if ($scope.SSLInfoSectionViewModel.PrimaryDomainDetail.ValidationValue != "")
            //        $scope.primarydomainapproveremail = $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.ValidationValue;
            //    else
            //        $scope.primarydomainapproveremail = $scope.SSLInfoRes.static_SelectOption;
            var instance = this.instance;
            $scope.ClearSummaryMsgAndScrollTop();
            if ($scope.SSLInfoSectionViewModel.IsGetApproverEmailListRequired) {
                $scope.primarydomainapproveremaillist = params.Result.AprroverEmailList
                var $ddlAddressListCountry = $('select#ddlApproverEmail');
                $ddlAddressListCountry.empty();
                $ddlAddressListCountry.append($("<option selected></option>").val
                  ($scope.SSLInfoRes.static_SelectOption).html($scope.SSLInfoRes.static_SelectOption));
                for (i = 0; i < params.Result.AprroverEmailList.length; i++) {
                    $ddlAddressListCountry.append($("<option></option>").val
                   (params.Result.AprroverEmailList[i]).html(params.Result.AprroverEmailList[i]));
                }
            }


            if ($scope.primarydomainapproveremail != "" && $scope.primarydomainapproveremail != undefined) {
                $ddlAddressListCountry.select2("val", $scope.primarydomainapproveremail);
            }

            if ($scope.GetApproverListReqFrom == 'PAGELOAD') {
                $scope.wizardstep = 3;

            }
            // 

        },
        onLoading: function (params) {
            var instance = this.instance;
            $scope.sslnotification.alerts.clear();
            instance.activeNotification = $scope.sslnotification.stuckNotifications.addLoading('<B>Loading</B> Please wait.', false);
            instance.isDisabled = true;
            instance.showError = false;
        },
        onError: function (params) {
            $scope.ApproverEmailListErrorCount += 1;
            $scope.sslnotification.alerts.clear();
            $scope.sslnotification.alerts.addError(params.Msg, $scope.sslnotificationAlertArguments)
            $('html, body').animate({ scrollTop: 0 }, 800);
            $scope.wizardstep = 3;
        }
    })

    // GETTING APPROVER EMAIL LIST FOR THE ADD ON DOMAINS
    $scope.GetApproverEmailListForAddOns = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.click = function (commonname, index) {
                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                sslRepository.sslInfo.GetApproverEmailList(commonname, $scope.SSLInfoSectionViewModel.APIParameterValue, index).then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result, index);
                });


            }
        },
        onSuccess: function (params, index) {

            if (params.Result.AprroverEmailList.length <= 10)
                $scope.SecondaryDomainIgnoreSearchOption[params.Result.SanIndex] = { minimumResultsForSearch: -1 }
            else
                $scope.SecondaryDomainIgnoreSearchOption[params.Result.SanIndex] = {}


            var instance = this.instance;
            $scope.sslnotification.alerts.clear();
            var ddlSanName = '#sanDropDown_' + params.Result.SanIndex;
            var $ddlSan = $(ddlSanName)
            $ddlSan.empty()
            $ddlSan.append($("<option selected></option>").val
  ($scope.SSLInfoRes.static_SelectOption).html($scope.SSLInfoRes.static_SelectOption));
            for (i = 0; i < params.Result.AprroverEmailList.length; i++) {
                $ddlSan.append($("<option></option>").val
               (params.Result.AprroverEmailList[i]).html(params.Result.AprroverEmailList[i]));
            }
            if ($scope.SSLInfoSectionViewModel.Status == "ACTIVE") {
                $ddlSan.select2("val", $scope.addonDomainApproverEmail[params.Result.SanIndex]);
            }
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            if ($scope.GetApproverListReqFrom == 'PAGELOAD') {
                $scope.wizardstep = 3;

            }

        },
        onLoading: function (params) {
            var instance = this.instance;
            $scope.sslnotification.alerts.clear();
            instance.activeNotification = $scope.sslnotification.stuckNotifications.addLoading('<B>Loading</B> Please wait.', false);
            instance.isDisabled = true;
            instance.showError = false;
        },
        onError: function (params) {
            $scope.ApproverEmailListErrorCount += 1;
            $scope.sslnotification.alerts.clear();
            $scope.sslnotification.alerts.addError(params.Msg, $scope.sslnotificationAlertArguments)
            $('html, body').animate({ scrollTop: 0 }, 800);
            $scope.wizardstep = 2;
        }
    })

    //BASED ON THE COUNTRY CODE FETCH THE COUNTRY NAME AND ASSIGN IT TO THE SCOPE VARIABLE $scope.Country TO DISPLAY THE COUNTRY NAME IN CSR READONLY STEP
    $scope.GetAndAssignCountryName = function (countrycode) {
        sslRepository.sslInfo.GetCountryName(countrycode).then(function (result) {
            $scope.Country = result;
        });

    }

    /*
    FUNCTION TO GET THE APPROVER EMAILS FOR ADD ON DOMAINS AND BINDING TO THE APPROVER EMAIL DROP DOWN
    */
    $scope.bindApproverEmails = function (domainname, index, dcvmethod, domainType, emailID) {
        if (dcvmethod == 'Email') {
            if ($scope.addonDomainApproverEmail != undefined) {
                $scope.addonDomainApproverEmail[index] = $scope.SSLInfoRes.static_SelectOption
            }
            else {
                $scope.addonDomainApproverEmail = []
                $scope.addonDomainApproverEmail[index] = $scope.SSLInfoRes.static_SelectOption
            }

            var ddlSanName = '#sanDropDown_' + index;
            var $ddlSan = $(ddlSanName)
            // $ddlSan.val($scope.SSLInfoRes.static_SelectOption).trigger('change');
            $ddlSan.select2("val", $scope.SSLInfoRes.static_SelectOption);

            //If already approver emails binded to dropdown then skip binding again.
            //if ($scope.addondomainsEmail.length < (index + 1))
            //{
            $scope.GetApproverEmailListForAddOns.click(domainname, index);
            // }

        }

        $scope.bindDomainsToValidateAndDCVMethod(domainname, dcvmethod, '', domainType, '', index);

    };

    $scope.selecteddcvmethodofaddondomain = [];

    /*$scope.UseSameMethodForAddonDomains =
        FUNCTION TO PUSH THE DOMAIN NAME AND APPROPRIATE DCV METHOD TO THE LIST 
         $scope.domainstovalidateviaemail FOR EMAIL TYPE, 
         $scope.domainstovalidateviahttp  FOR HTTP  TYPE
         $scope.domainstovalidateviadns   FOR DNS   TYPE
    */
    $scope.bindDomainsToValidateAndDCVMethod = function (domainName, dcvMethod, emailId, domainType, ChangeActionFrom, index) {
        if (dcvMethod.toUpperCase() == 'EMAIL') {
            $scope.SSLInfoSectionViewModel.IsGetApproverEmailListRequired = true;
            if (ChangeActionFrom == 'PRIMARYDROPDOWNCHANGE') {
                $scope.RemoveDomainNameFromDCVMethods(domainName, true, true, true)
                $scope.primarydomainapproveremail = $scope.SSLInfoRes.static_SelectOption;
                emailId = $scope.primarydomainapproveremail
                $('#primDomainDcvMethod').select2("val", $scope.SSLInfoRes.static_SelectOption);

            }

        }
        if (domainType == 'PRIMARY' && $scope.SSLInfoSectionViewModel.Status == 'ACTIVE' && dcvMethod.toUpperCase() == 'EMAIL' && (emailId == '' || emailId == null || emailId == undefined || emailId == $scope.SSLInfoRes.static_SelectOption)) {
            $scope.GetApproverListReqFrom = "DROPDOWNCHANGE";
            $scope.GetApproverEmailList.click();

        }
        if (domainType == 'PRIMARY' && $scope.dcvUseSameMethodForAllDomains && ChangeActionFrom == 'PRIMARYDROPDOWNCHANGE') {

            $scope.UseSameMethodForAddonDomains(dcvMethod, true)
        }
        $scope.AddDCVMethodToList(dcvMethod, domainName, emailId, domainType, index)

    }
    /*
        REMOVE THE DOMAIN NAME FROM OTHER LISTS IF MODIFED THE DCV METHOD. EXAMPLE: IF DCV METHOD SELECTED AS EMAIL IT WOULD BE ADDED TO THE LIST domainstovalidateviaemail AND IF IT IS MODIFIED
        AS FILE THEN IT SHOULD BE REMOVED FROM domainstovalidateviaemail AND THEN ADDED TO THE LIST domainstovalidateviahttp
    */

    $scope.RemoveDomainNameFromDCVMethods = function (domainName, removeFromEmailList, removeFromHttpList, removeFromDnsList) {
        for (var i = 0; i < $scope.domainstovalidateviaemail.length ; i++) {

            if ($scope.domainstovalidateviaemail[i].NAME == domainName && removeFromEmailList) {
                $scope.domainstovalidateviaemail.splice(i, 1);
            }

        }
        for (var i = 0; i < $scope.domainstovalidateviahttp.length ; i++) {

            if ($scope.domainstovalidateviahttp[i].NAME == domainName && removeFromHttpList) {
                $scope.domainstovalidateviahttp.splice(i, 1);
            }

        }
        for (var i = 0; i < $scope.domainstovalidateviadns.length ; i++) {

            if ($scope.domainstovalidateviadns[i].NAME == domainName && removeFromDnsList) {
                $scope.domainstovalidateviadns.splice(i, 1);
            }

        }
    }

    $scope.ReplaceCommonNameIfModified = function () {

        if ($scope.SSLInfoSectionViewModel.Status == 'ACTIVE') {
            if ($scope.SSLInfoSectionViewModel.PrimaryDomainDetail.CommonName != $scope.oldPrimaryDomain.CommonName) {
                $scope.ReplaceCommonNameIfModifiedOnReissue($scope.oldPrimaryDomain.CommonName, $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.CommonName,'PRIMARY')
            }
            for (domainInex = 0; domainInex < $scope.addonDomains.length; domainInex++) {
                if ($scope.oldAddonDomains[domainInex].OldCommonName != $scope.addonDomains[domainInex].CommonName) {
                    $scope.ReplaceCommonNameIfModifiedOnReissue($scope.oldAddonDomains[domainInex].OldCommonName, $scope.addonDomains[domainInex].CommonName,'SECONDARY')
                    $scope.oldAddonDomains[domainInex].OldCommonName = $scope.addonDomains[domainInex].CommonName
                }
            }
        }
    }
    $scope.ReplaceCommonNameIfModifiedOnReissue = function (oldCommonName, newCommonName, domainType) {
        for (var i = 0; i < $scope.domainstovalidateviaemail.length ; i++) {


            if ($scope.domainstovalidateviaemail[i].NAME == oldCommonName && $scope.domainstovalidateviaemail[i].DOMAINTYPE == domainType) {
                $scope.domainstovalidateviaemail[i].NAME = newCommonName;
            }

        }
        for (var i = 0; i < $scope.domainstovalidateviahttp.length ; i++) {

            if ($scope.domainstovalidateviahttp[i].NAME == oldCommonName && $scope.domainstovalidateviahttp[i].DOMAINTYPE == domainType) {
                $scope.domainstovalidateviahttp[i].NAME = newCommonName;
            }

        }
        for (var i = 0; i < $scope.domainstovalidateviadns.length ; i++) {

            if ($scope.domainstovalidateviadns[i].NAME == oldCommonName && $scope.domainstovalidateviadns[i].DOMAINTYPE == domainType) {
                $scope.domainstovalidateviadns[i].NAME = newCommonName;
            }

        }

    }
    //FUNCTION TO MAKE THE ADD ON DOMAINS DCV METHOD SAME AS PRIMARY DOMAIN METHOD IF THE CHECKBOX "Use same method for all domains" IS CHECKED
    $scope.UseSameMethodForAddonDomains = function (selectedDCVMethod, blValue) {

        $scope.addonDomainApproverEmail = [];
        for (var i = 0; i < $scope.addonDomains.length; i++) {
            $scope.selecteddcvmethodofaddondomain[i] = "";
            $scope.addonDcvMethodDisabled = false;
            $scope.RemoveDomainNameFromDCVMethods($scope.addonDomains[i].CommonName, true, true, true)
            // $scope.addonDomainApproverEmail[i = $scope.SSLInfoRes.static_SelectOption;
            var ddlSanName = '#sanDropDown_' + i;
            var $ddlSan = $(ddlSanName)
            $ddlSan.select2("val", $scope.SSLInfoRes.static_SelectOption);

        }

        if (selectedDCVMethod != "") {
            if (blValue) {
                //  $scope.selecteddcvmethodofaddondomain[0] = selectedDCVMethod;
                for (var i = 0; i < $scope.addonDomains.length; i++) {
                    if ($scope.addonDomains[i].CommonName != "" && $scope.addonDomains[i].CommonName != undefined) {
                        var resultsetItem = [];
                        resultsetItem.NAME = $scope.addonDomains[i].CommonName;
                        resultsetItem.DCV = selectedDCVMethod;
                        resultsetItem.EMAILADDRESS = '';
                        resultsetItem.DOMAINTYPE = 'SECONDARY';

                        $scope.selecteddcvmethodofaddondomain[i] = selectedDCVMethod
                        $scope.addonDcvMethodDisabled = true;
                        if (selectedDCVMethod.toUpperCase() == 'EMAIL' && $scope.addonDomains[i].CommonName != "") {
                            //$scope.domainstovalidateviaemail.push(resultsetItem)
                            $scope.GetApproverEmailListForAddOns.click($scope.addonDomains[i].CommonName, i);
                        }

                        $scope.AddDCVMethodToList(selectedDCVMethod, $scope.addonDomains[i].CommonName, '', 'SECONDARY', i)
                    }

                }
            }

        }



    }

    // FUNCTION TO OPEN THE EDIT ADD ON DOMAIN MODAL POPUP
    $scope.IsEditAddonDomainModalPopUpOpened = false;
    $scope.openEditAddonDomainModalPopUp = function (index) {
        var addondomainIndex = index;
        if (!$scope.IsEditAddonDomainModalPopUpOpened) {
            var modalInstance = $modal.open({
                templateUrl: "/Domains/SSL/EditAddonDomain",
                controller: 'sslEditAddonDomainModalCtrl',
                size: 'lg',
                backdrop: 'static',
                //keyboard: false,

                resolve: {
                    addonDomainName: function () {

                        return $scope.addonDomains[index];
                    },

                    primaryDomainDetails: function () {
                        return $scope.SSLInfoSectionViewModel.PrimaryDomainDetail;
                    },
                    IsSanActivationWithSubDomainsOnly: function () {
                        return $scope.SSLInfoSectionViewModel.IsSanActivationWithSubDomainsOnly
                    },
                    IsSanReissueEditWithSubDomainOnly: function () {
                        return $scope.SSLInfoSectionViewModel.IsSanReissueEditWithSubDomainOnly
                    }

                }
            });
            modalInstance.result.then(function (editedDomainName) {
                $scope.IsEditAddonDomainModalPopUpOpened = false;
                if (editedDomainName != '') {
                    $scope.addonDomains[index].CommonName = editedDomainName;
                    $scope.sslnotification.stuckNotifications.addSuccess($scope.ErrorMsgRes.error_Site_AddonChangeSucceeded, $scope.sslnotificationAlertArgumentsforSanEdit)
                }

            });
            modalInstance.opened.then(function () {
                $scope.IsEditAddonDomainModalPopUpOpened = true;
            });
        }


    }

    // FUNCTION TO OPEN THE REMOVE ADD ON DOMAIN MODAL POPUP
    $scope.IsRemoveAddonDomainModalPopUpOpened = false;
    $scope.openRemoveAddonDomainModalPopUp = function (index) {
        if (!$scope.IsRemoveAddonDomainModalPopUpOpened) {
            var activeModalInstance = $modal.open({
                templateUrl: "/Domains/SSL/Common/PromptRemove",
                controller: 'promptRemoveModalCtrl',
                size: 'lg',
                resolve: {
                    modalTitle: function () {
                        return $scope.SSLInfoRes.static_RemoveAddonDomainTitle;
                    },
                    modalContent: function () {
                        return $scope.SSLInfoRes.static_RemoveAddonDomainContent;
                    }
                }
            });
            activeModalInstance.result.then(function (msg) {
                $scope.IsRemoveAddonDomainModalPopUpOpened = false;
                if (msg == 'yes') {
                    $scope.addonDomains.splice(index, 1)
                    $scope.SSLInfoSectionViewModel.SanCount = $scope.SSLInfoSectionViewModel.SanCount - 1;
                }
                //when user click 
            }, function () {
                // any result
                activeModalInstance = null;
            });

            activeModalInstance.opened.then(function () {
                $scope.IsRemoveAddonDomainModalPopUpOpened = true;
            });
        }

    }

    /* FUNCTION GetDcvMethodName RETURN DCV METHOD NAME BASED ON THE CODE PASSED. SINCE WHEN REFERRING THE BELOW ENUMERATOR IN ANGULARJS IT RETURN THE CODE LIKE 0 --> EMAIL , 1--> FILE, 2--> DNS
    public enum SSLDCValidationType
    {
        Email = 0,
        File,
        Dns
    }
    */
    $scope.GetDcvMethodName = function (methodCode) {
        var methodName = "";
        switch (methodCode) {
            case 0: methodName = "Email";
                break;
            case 1: methodName = "File";
                break;
            case 2: methodName = "Dns";
                break;
        }
        return methodName;
    }


    $scope.GetValidationType = function (validationCode) {
        var validationType = "";
        switch (validationCode) {
            case 0: validationType = "Domain";
                break;
            case 1: validationType = "Organization";
                break;
            case 2: validationType = "Extended";
                break;
        }
        return validationType;
    }
    
    $scope.subDomainNameforQuicSSLPremium = '';
    $scope.domainIndex = '';
    //This function returns the domainName only from the argument we passsed
    $scope.validateDomain = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.click = function (domainName,subDomainName,index) {
                instance.asyncStatus(pageHelper.AsyncStatus.Loading)
                $scope.subDomainNameforQuicSSLPremium = subDomainName;
                $scope.domainIndex = index;
                sslRepository.sslInfo.ValidateDomainInfo(domainName).then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                });
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            newDomain = params.Result;
            if (newDomain == "") {
                $scope.sslactivate.addondomainField.$setValidity('Saninvalidforquicksslpremium', false);
                $scope.ErrorOccuredInReissue = true;
                $scope.addOnErrorLength = $scope.domainIndex;
            }
            else {                
                if (newDomain != '' && newDomain.toLowerCase() != $scope.subDomainNameforQuicSSLPremium.toLowerCase()) {
                    $scope.sslactivate.addondomainField.$setValidity('Saninvalidforquicksslpremium', false);
                    $scope.ErrorOccuredInReissue = true;
                    $scope.addOnErrorLength = $scope.domainIndex;
                }
                else {
                    $scope.sslactivate.addondomainField.$setValidity('Saninvalidforquicksslpremium', true);
                    $scope.ErrorOccuredInReissue = false;
                }
            }
        },
        onActive: function (params) {
            var instance = this.instance;
        },
        onLoading: function (params) {
            var instance = this.instance;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            //instance.showLoadPanel = false;
            instance.showErrors = true;
            //$modalInstance.asyncStatus(pageHelper.AsyncStatus.Error, { msg: params.Msg });
            $scope.pageNotification.alerts.addError(params.Msg, { hasClose: true, isAutoHide: true });
        }
    });


    // ADD A DOMAIN NAME FROM THE TEXTBOX FIELD TO ADDONDOMAIN LIST
    $scope.AddonDomainValidation = function (value, index) {
        $scope.CheckDuplicateCommonNames();
        $scope.CheckIsMinimumAddonDomainEntered();
        // ADD ON DOMAIN NAME SHOULD BE SAME AS THE DOMAIN NAME OF PRIMARY DOMAIN IF THE ATTRIBUTE IsSanActivationWithSubDomainsOnly IS TRUE
        if ($scope.SSLInfoSectionViewModel.IsSanActivationWithSubDomainsOnly && ($scope.SSLInfoSectionViewModel.Status == 'NEWPURCHASE' || $scope.SSLInfoSectionViewModel.Status == 'NEWRENEWAL')) {
            var domName = $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.DomainName;
            if (value != "") {


                if (value.match(domName + "$") != domName && $scope.sslactivate.addondomainField != undefined) {
                    $scope.sslactivate.addondomainField.$setValidity('invalidSan', false);
                    $scope.addOnErrorLength = index;

                }
                else {

                    $scope.sslactivate.addondomainField.$setValidity('invalidSan', true);
                }
            }


        }
        if ($scope.SSLInfoSectionViewModel.IsSanReissueEditWithSubDomainOnly && $scope.SSLInfoSectionViewModel.Status == 'ACTIVE') {
            var subDomainName = $scope.addonDomains[index].DomainName;
            if (value != "") {

                if (value.match(subDomainName + "$") != subDomainName && $scope.sslactivate.addondomainField != undefined) {
                    $scope.sslactivate.addondomainField.$setValidity('invalidSubDomain', false);
                    $scope.ErrorOccuredInReissue = true;
                    $scope.addOnErrorLength = index;
                }
                else {

                    $scope.sslactivate.addondomainField.$setValidity('invalidSubDomain', true);
                    $scope.ErrorOccuredInReissue = false;

                }
            }
            if (value != "") {
                if ($scope.addonDomains[0].DomainName != '' && $scope.addonDomains[0].DomainName != undefined && $scope.addonDomains[0].DomainName != null && $scope.addonDomains[0].DomainName.indexOf('.') != -1) {
                    var subDomainNameforQuicSSLPremium = $scope.addonDomains[0].DomainName;
                    if ($scope.SSLInfoSectionViewModel.SSlType.toUpperCase() == 'QUICKSSL PREMIUM') {
                        //var splitDomain = value.split('.');
                        //var newDomain = splitDomain[splitDomain.length - 2] + '.' + splitDomain[splitDomain.length - 1];  

                        $scope.validateDomain.click(value, subDomainNameforQuicSSLPremium.toLowerCase(), index);                       
                        /*if (newDomain != '' && newDomain.toLowerCase() != subDomainNameforQuicSSLPremium.toLowerCase()) {
                            $scope.sslactivate.addondomainField.$setValidity('Saninvalidforquicksslpremium', false);
                            $scope.ErrorOccuredInReissue = true;
                            $scope.addOnErrorLength = index;
                        }
                        else {
                            $scope.sslactivate.addondomainField.$setValidity('Saninvalidforquicksslpremium', true);
                            $scope.ErrorOccuredInReissue = false;
                        }*/
                    }
                }
            }
            //else
            //{
            //    $scope.sslactivate.addondomainField.$setValidity('Saninvalidforquicksslpremium', true);
            //    $scope.ErrorOccuredInReissue = false;
            //}

        }

        //INCASE OF REISSUE IF THE DOMAIN NAME MODIFIED FIND THE OLD COMMON NAME IN THE EMAIL/HTTP/DNS LIST AND MODIFY IT THERE

        $scope.ReplaceCommonNameIfModified();
        if ($scope.sslactivate.addondomainField != undefined)
            $scope.sslactivate.addondomainField.$setValidity('invaliddomain', true);

    }

    // FUNCTION TO CHECK WHETHER THE MINIMUM ADD ON DOMAIN WAS GIVEN
    $scope.CheckIsMinimumAddonDomainEntered = function () {
        if ($scope.sslactivate.addondomainField != undefined) {
            var addonCount = 0;
            for (var i = 0; i < $scope.addonDomains.length; i++) {
                if ($scope.addonDomains[i].CommonName != "") {
                    addonCount += 1;
                }

            }
            if ($scope.sslactivate.addondomainField != undefined) {
                if (addonCount >= $scope.SSLInfoSectionViewModel.MinimumSanToActivate)
                    $scope.sslactivate.addondomainField.$setValidity('miniumSanNotAdded', true);
                else {

                    $scope.sslactivate.addondomainField.$setValidity('invalidSan', true);
                    $scope.sslactivate.addondomainField.$setValidity('invalidSubDomain', true);
                    $scope.sslactivate.addondomainField.$setValidity('miniumSanNotAdded', false);
                    $scope.addOnErrorLength = 0;
                }
            }


        }

    }

    $scope.ClearSummaryMsgAndScrollTop = function () {
        $scope.sslnotification.alerts.clear();
        $('html, body').animate({ scrollTop: 0 }, 800);

    }

    $scope.AssignValuesToModel = function () {


        $scope.SSLInfoSectionViewModel.CSR = $scope.SSLInfoSectionViewModel.CSRCode;
        // FILL COMPANY CONTACTS ON REISSUE
        if ($scope.SSLInfoSectionViewModel.CompanyContactDetails == null) {
            $scope.SSLInfoSectionViewModel.CompanyContactDetails = {};

        }
        $scope.SSLInfoSectionViewModel.CompanyContactDetails.CompanyName = $scope.AddressList.CompanyName
        $scope.SSLInfoSectionViewModel.CompanyContactDetails.AssumedName = $scope.AddressList.AssumedName;
        $scope.SSLInfoSectionViewModel.CompanyContactDetails.Department = $scope.AddressList.Department
        $scope.SSLInfoSectionViewModel.CompanyContactDetails.CompanyNumber = $scope.AddressList.CompanyNumber
        $scope.SSLInfoSectionViewModel.CompanyContactDetails.DunsNumber = $scope.AddressList.DunsNumber;
        $scope.SSLInfoSectionViewModel.CompanyContactDetails.IncorporatingAgency = $scope.AddressList.IncorporatingAgency
        $scope.SSLInfoSectionViewModel.CompanyContactDetails.CityOfIncorporation = $scope.AddressList.CityOfIncorporation
        $scope.SSLInfoSectionViewModel.CompanyContactDetails.StateProvinceOfIncorporation = $scope.AddressList.StateprovinceofIncorporation
        $scope.SSLInfoSectionViewModel.CompanyContactDetails.CountryOfIncorporation = $scope.AddressList.CountryofIncorporation
        $scope.SSLInfoSectionViewModel.CompanyContactDetails.Address1 = $scope.AddressList.Address
        $scope.SSLInfoSectionViewModel.CompanyContactDetails.Address2 = $scope.AddressList.Address1
        $scope.SSLInfoSectionViewModel.CompanyContactDetails.POBox = $scope.AddressList.POBox
        $scope.SSLInfoSectionViewModel.CompanyContactDetails.City = $scope.AddressList.City
        $scope.SSLInfoSectionViewModel.CompanyContactDetails.StateProvince = $scope.AddressList.StateProvince
        $scope.SSLInfoSectionViewModel.CompanyContactDetails.PostalCode = $scope.AddressList.ZIPPostalCode
        $scope.SSLInfoSectionViewModel.CompanyContactDetails.Country = $scope.AddressList.Country
        $scope.SSLInfoSectionViewModel.CompanyContactDetails.AdminEmail = $scope.AddressList.EmailAddress;
        $scope.SSLInfoSectionViewModel.CompanyContactDetails.BusinessCategory = $scope.AddressList.BusinessCategory
        $scope.SSLInfoSectionViewModel.CompanyContactDetails.DateOfIncorporation = $scope.AddressList.DateofIncorporation
        if ($scope.AddressList.PhoneNumber != '' && $scope.AddressList.PhoneCode != '')
            $scope.SSLInfoSectionViewModel.CompanyContactDetails.PhoneNumber = $scope.AddressList.PhoneCode + '.' + $scope.AddressList.PhoneNumber
        else
            $scope.SSLInfoSectionViewModel.CompanyContactDetails.PhoneNumber = '';
        $scope.SSLInfoSectionViewModel.CompanyContactDetails.PhoneNumberExt = $scope.AddressList.PhoneNumberExt
        if ($scope.AddressList.FaxNumber != '' && $scope.AddressList.FaxCode != '')
            $scope.SSLInfoSectionViewModel.CompanyContactDetails.FaxNumber = $scope.AddressList.FaxCode + '.' + $scope.AddressList.FaxNumber;
        else
            $scope.SSLInfoSectionViewModel.CompanyContactDetails.FaxNumber = '';


        //FILL CALL BACK CONTACTS ON REISSUE
        if ($scope.SSLInfoSectionViewModel.CallbackContactDetails == null) {
            $scope.SSLInfoSectionViewModel.CallbackContactDetails = {};

        }



        $scope.SSLInfoSectionViewModel.CallbackContactDetails.FirstName = $scope.CallBackContacts.FirstName
        $scope.SSLInfoSectionViewModel.CallbackContactDetails.LastName = $scope.CallBackContacts.LastName
        $scope.SSLInfoSectionViewModel.CallbackContactDetails.JobTitle = $scope.CallBackContacts.JobTitle
        $scope.SSLInfoSectionViewModel.CallbackContactDetails.CallbackMethod = $scope.CallBackContacts.CallBackMethod;
        if ($scope.CallBackContacts.PhoneCode != '' && $scope.CallBackContacts.Phone != '')
            $scope.SSLInfoSectionViewModel.CallbackContactDetails.PhoneNumber = $scope.CallBackContacts.PhoneCode + '.' + $scope.CallBackContacts.Phone;
        else
            $scope.SSLInfoSectionViewModel.CallbackContactDetails.PhoneNumber = ''
        $scope.SSLInfoSectionViewModel.CallbackContactDetails.PhoneNumberExt = $scope.CallBackContacts.PhoneExt;

        if ($scope.CallBackContacts.Fax != '' && $scope.CallBackContacts.FaxCode != '')
            $scope.SSLInfoSectionViewModel.CallbackContactDetails.FaxNumber = $scope.CallBackContacts.FaxCode + '.' + $scope.CallBackContacts.Fax;
        else
            $scope.SSLInfoSectionViewModel.CallbackContactDetails.FaxNumber = '';


        $scope.SSLInfoSectionViewModel.CallbackContactDetails.EmailAddress = $scope.CallBackContacts.EmailAddress;
        $scope.SSLInfoSectionViewModel.CallbackContactDetails.CompanyName = $scope.CallBackContacts.CompanyName;
        $scope.SSLInfoSectionViewModel.CallbackContactDetails.Department = $scope.CallBackContacts.Department;
        $scope.SSLInfoSectionViewModel.CallbackContactDetails.Address1 = $scope.CallBackContacts.Address;
        $scope.SSLInfoSectionViewModel.CallbackContactDetails.Address2 = $scope.CallBackContacts.Address1;
        $scope.SSLInfoSectionViewModel.CallbackContactDetails.POBox = $scope.CallBackContacts.POBox;
        $scope.SSLInfoSectionViewModel.CallbackContactDetails.City = $scope.CallBackContacts.City;
        $scope.SSLInfoSectionViewModel.CallbackContactDetails.StateProvince = $scope.CallBackContacts.StateProvince;
        $scope.SSLInfoSectionViewModel.CallbackContactDetails.PostalCode = $scope.CallBackContacts.ZIPPostalCode;
        $scope.SSLInfoSectionViewModel.CallbackContactDetails.Country = $scope.CallBackContacts.Country;
        $scope.SSLInfoSectionViewModel.CallbackContactDetails.DestinationSame = $scope.CallBackContacts.DestinationSame;




        //FILL ADMIN CONTACTS ON REISSUE

        if ($scope.SSLInfoSectionViewModel.AdminContactDetails == null) {
            $scope.SSLInfoSectionViewModel.AdminContactDetails = {};
            $scope.SSLInfoSectionViewModel.AdminContactDetails.Address = {};
        }
        $scope.SSLInfoSectionViewModel.AdminContactDetails.FirstName = $scope.AdminContacts.FirstName
        $scope.SSLInfoSectionViewModel.AdminContactDetails.LastName = $scope.AdminContacts.LastName
        $scope.SSLInfoSectionViewModel.AdminContactDetails.Organization = $scope.AdminContacts.CompanyName
        $scope.SSLInfoSectionViewModel.AdminContactDetails.JobTitle = $scope.AdminContacts.JobTitle
        $scope.SSLInfoSectionViewModel.AdminContactDetails.Address1 = $scope.AdminContacts.Address
        $scope.SSLInfoSectionViewModel.AdminContactDetails.Address2 = $scope.AdminContacts.Address1
        $scope.SSLInfoSectionViewModel.AdminContactDetails.City = $scope.AdminContacts.City
        $scope.SSLInfoSectionViewModel.AdminContactDetails.StateProvince = $scope.AdminContacts.StateProvince
        $scope.SSLInfoSectionViewModel.AdminContactDetails.PostalCode = $scope.AdminContacts.ZIPPostalCode
        $scope.SSLInfoSectionViewModel.AdminContactDetails.Country = $scope.AdminContacts.Country
        if ($scope.AdminContacts.PhoneCode != '' && $scope.AdminContacts.PhoneNumber != '')
            $scope.SSLInfoSectionViewModel.AdminContactDetails.Phone = $scope.AdminContacts.PhoneCode + '.' + $scope.AdminContacts.PhoneNumber
        else
            $scope.SSLInfoSectionViewModel.AdminContactDetails.Phone = ''
        $scope.SSLInfoSectionViewModel.AdminContactDetails.PhoneExt = $scope.AdminContacts.PhoneNumberExt

        if ($scope.AdminContacts.FaxNumber != '' && $scope.AdminContacts.FaxCode != '')
            $scope.SSLInfoSectionViewModel.AdminContactDetails.Fax = $scope.AdminContacts.FaxCode + '.' + $scope.AdminContacts.FaxNumber;
        else
            $scope.SSLInfoSectionViewModel.AdminContactDetails.Fax = '';


        $scope.SSLInfoSectionViewModel.AdminContactDetails.EmailAddress = $scope.AdminContacts.EmailAddress





        //FILL TECH CONTACTS ON REISSUE
        if ($scope.SSLInfoSectionViewModel.TechContactDetails == null) {
            $scope.SSLInfoSectionViewModel.TechContactDetails = {};
            $scope.SSLInfoSectionViewModel.TechContactDetails.Address = {};
        }
        $scope.SSLInfoSectionViewModel.TechContactDetails.FirstName = $scope.TechContacts.FirstName
        $scope.SSLInfoSectionViewModel.TechContactDetails.LastName = $scope.TechContacts.LastName
        $scope.SSLInfoSectionViewModel.TechContactDetails.Organization = $scope.TechContacts.CompanyName
        $scope.SSLInfoSectionViewModel.TechContactDetails.JobTitle = $scope.TechContacts.JobTitle
        $scope.SSLInfoSectionViewModel.TechContactDetails.Address1 = $scope.TechContacts.Address
        $scope.SSLInfoSectionViewModel.TechContactDetails.Address2 = $scope.TechContacts.Address1
        $scope.SSLInfoSectionViewModel.TechContactDetails.City = $scope.TechContacts.City
        $scope.SSLInfoSectionViewModel.TechContactDetails.StateProvince = $scope.TechContacts.StateProvince
        $scope.SSLInfoSectionViewModel.TechContactDetails.PostalCode = $scope.TechContacts.ZIPPostalCode
        $scope.SSLInfoSectionViewModel.TechContactDetails.Country = $scope.TechContacts.Country
        if ($scope.TechContacts.PhoneCode != '' && $scope.TechContacts.PhoneNumber != '')
            $scope.SSLInfoSectionViewModel.TechContactDetails.Phone = $scope.TechContacts.PhoneCode + '.' + $scope.TechContacts.PhoneNumber
        else
            $scope.SSLInfoSectionViewModel.TechContactDetails.Phone = ''
        $scope.SSLInfoSectionViewModel.TechContactDetails.PhoneExt = $scope.TechContacts.PhoneNumberExt

        if ($scope.TechContacts.FaxNumber != '' && $scope.TechContacts.FaxCode != '')
            $scope.SSLInfoSectionViewModel.TechContactDetails.Fax = $scope.TechContacts.FaxCode + '.' + $scope.TechContacts.FaxNumber;
        else
            $scope.SSLInfoSectionViewModel.TechContactDetails.Fax = '';



        $scope.SSLInfoSectionViewModel.TechContactDetails.EmailAddress = $scope.TechContacts.EmailAddress


        if ($scope.SSLInfoSectionViewModel.IsDCVStepRequired) {
            var PrimaryDomainDetail = [];
            PrimaryDomainDetail.CommonName = "";
            PrimaryDomainDetail.DomainName = "";
            PrimaryDomainDetail.ValidationType = "";
            PrimaryDomainDetail.ValidationValue = "";
            PrimaryDomainDetail.IsHttpDCVUsed = false;
            PrimaryDomainDetail.IsDNSDCVUsed = false;


            var SanDomDetails = [];

            $scope.SSLInfoSectionViewModel.SanDomainsDetail = [];

            for (i = 0; i < $scope.domainstovalidateviaemail.length; i++) {

                if ($scope.domainstovalidateviaemail[i].DOMAINTYPE == 'PRIMARY') {
                    PrimaryDomainDetail.CommonName = $scope.domainstovalidateviaemail[i].NAME;
                    PrimaryDomainDetail.DomainName = $scope.domainstovalidateviaemail[i].NAME;
                    PrimaryDomainDetail.ValidationType = $scope.domainstovalidateviaemail[i].DCV;
                    PrimaryDomainDetail.ValidationValue = $scope.domainstovalidateviaemail[i].EMAILADDRESS;
                    PrimaryDomainDetail.IsHttpDCVUsed = false;
                    PrimaryDomainDetail.IsDNSDCVUsed = false;

                }
                else {
                    var SanDomainDetails = [];
                    SanDomainDetails.CommonName = $scope.domainstovalidateviaemail[i].NAME;
                    SanDomainDetails.DomainName = $scope.domainstovalidateviaemail[i].NAME;
                    SanDomainDetails.ValidationType = $scope.domainstovalidateviaemail[i].DCV;
                    SanDomainDetails.ValidationValue = $scope.domainstovalidateviaemail[i].EMAILADDRESS;
                    SanDomainDetails.SanOrder = $scope.domainstovalidateviaemail[i].SanOrder;
                    SanDomDetails.push(SanDomainDetails)

                }
            }
            for (i = 0; i < $scope.domainstovalidateviahttp.length; i++) {
                if ($scope.domainstovalidateviahttp[i].DOMAINTYPE == 'PRIMARY') {
                    PrimaryDomainDetail.CommonName = $scope.domainstovalidateviahttp[i].NAME;
                    PrimaryDomainDetail.DomainName = $scope.domainstovalidateviahttp[i].NAME;
                    PrimaryDomainDetail.ValidationType = $scope.domainstovalidateviahttp[i].DCV;
                    PrimaryDomainDetail.ValidationValue = $scope.domainstovalidateviahttp[i].EMAILADDRESS;
                    PrimaryDomainDetail.IsHttpDCVUsed = true;
                    PrimaryDomainDetail.IsDNSDCVUsed = false;
                }
                else {
                    var SanDomainDetails = [];
                    SanDomainDetails.CommonName = $scope.domainstovalidateviahttp[i].NAME;
                    SanDomainDetails.DomainName = $scope.domainstovalidateviahttp[i].NAME;
                    SanDomainDetails.ValidationType = $scope.domainstovalidateviahttp[i].DCV;
                    SanDomainDetails.ValidationValue = $scope.domainstovalidateviahttp[i].EMAILADDRESS;
                    SanDomainDetails.SanOrder = $scope.domainstovalidateviahttp[i].SanOrder;
                    SanDomDetails.push(SanDomainDetails)

                }
            }

            for (i = 0; i < $scope.domainstovalidateviadns.length; i++) {
                if ($scope.domainstovalidateviadns[i].DOMAINTYPE == 'PRIMARY') {
                    PrimaryDomainDetail.CommonName = $scope.domainstovalidateviadns[i].NAME;
                    PrimaryDomainDetail.DomainName = $scope.domainstovalidateviadns[i].NAME;
                    PrimaryDomainDetail.ValidationType = $scope.domainstovalidateviadns[i].DCV;
                    PrimaryDomainDetail.ValidationValue = $scope.domainstovalidateviadns[i].EMAILADDRESS;;
                    PrimaryDomainDetail.IsHttpDCVUsed = false;
                    PrimaryDomainDetail.IsDNSDCVUsed = true;
                }
                else {
                    var SanDomainDetails = [];
                    SanDomainDetails.CommonName = $scope.domainstovalidateviadns[i].NAME;
                    SanDomainDetails.DomainName = $scope.domainstovalidateviadns[i].NAME;
                    SanDomainDetails.ValidationType = $scope.domainstovalidateviadns[i].DCV;
                    SanDomainDetails.ValidationValue = $scope.domainstovalidateviadns[i].EMAILADDRESS;
                    SanDomainDetails.SanOrder = $scope.domainstovalidateviadns[i].SanOrder;
                    SanDomDetails.push(SanDomainDetails)

                }
            }
            var sortedSanDetails = $filter('orderBy')(SanDomDetails, "SanOrder");
            $scope.SSLInfoSectionViewModel.SanDomainsDetail = sortedSanDetails;

            if ($scope.SSLInfoSectionViewModel.IsSan && $scope.addonDomainCount > 0 && $scope.SSLInfoSectionViewModel.ProviderName != "COMODO")
                $scope.SSLInfoSectionViewModel.SanDomainsDetail = $scope.addonDomains;

            if ($scope.domainstovalidateviahttp.length > 0 && $scope.domainstovalidateviaemail.length == 0 && $scope.domainstovalidateviadns.length == 0) {
                $scope.SSLInfoSectionViewModel.IsHttpDCVUsed = true;

            }
            else {
                $scope.SSLInfoSectionViewModel.IsHttpDCVUsed = false;
            }
            if ($scope.domainstovalidateviadns.length > 0 && $scope.domainstovalidateviahttp.length == 0 && $scope.domainstovalidateviaemail.length == 0) {
                $scope.SSLInfoSectionViewModel.IsDNSDCVUsed = true;
            }
            else {
                $scope.SSLInfoSectionViewModel.IsDNSDCVUsed = false;
            }
            $scope.SSLInfoSectionViewModel.PrimaryDomainDetail = PrimaryDomainDetail;
        }
        else {

            var dnsNames = '';
            for (var i = 0; i < $scope.addonDomains.length; i++) {
                if ($scope.addonDomains[i].CommonName != null && $scope.addonDomains[i].CommonName != '' && $scope.addonDomains[i].CommonName != undefined) {
                    if (dnsNames == '') {
                        dnsNames = $scope.addonDomains[i].CommonName;

                    }
                    else {

                        dnsNames = dnsNames + ',' + $scope.addonDomains[i].CommonName;

                    }
                }
            }

            $scope.SSLInfoSectionViewModel.DnsNames = dnsNames;
        }

        if ($scope.SSLInfoSectionViewModel.PrimaryDomainDetail.ValidationValue == $scope.SSLInfoRes.static_SelectOption)
            $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.ValidationValue = "";


    }

    $scope.WizardStepCancelClick = function (returnUrl) {
        if ($scope.wizardstep > 1) {
            if (returnUrl != '' && returnUrl != null && returnUrl != undefined && $scope.isConfirmClicked)
            {
                window.location = "/domains/ssl/ProductPage/" + $scope.SSLInfoSectionViewModel.CertificateId + "/" + $scope.domainName;
            }
            else
            {
                if (returnUrl != '' && returnUrl != null && returnUrl != undefined && returnUrl.toLowerCase() == "productlist")
                {
                    for (var step = $scope.wizardstep; step > 1 ; step--)
                        $scope.ClearValuesOnStepBackward(step);
                }
                $scope.wizardstep = 1;
            }

            //$scope.setStep(1);
            //$('html, body').animate({ scrollTop: 0 }, 800);
        }
        else if ($scope.wizardstep == 1) {
            sslRepository.sslInfo.RedirectProductPageJSON($scope.SSLInfoSectionViewModel.CertificateId).then(function (result) {
                if (!result.Error) {
                    if (result.Result.PrimaryDomainName != '' && result.Result.PrimaryDomainName != null && result.Result.PrimaryDomainName != undefined)
                    {
                        var redirectURL = result.Msg;
                        window.location = redirectURL;
                    }
                    else
                        window.location = "/productlist/sslcertificates";
                }
                else {
                    $scope.sslnotification.alerts.clear();
                    $scope.sslnotification.alerts.addError(result.Msg, $scope.sslnotificationAlertArguments)
                    $('html, body').animate({ scrollTop: 0 }, 800);
                    return false;
                }
            });
        }

    }

    $scope.ClearValuesOnStepBackward = function (step) {

        $scope.sslnotification.alerts.clear();

        //THIS BELOW SET OF CODE FOR WHEN STEP BACKWARD FROM 4 TO LESS THAN 3 SINCE 3 IS THE DCV VALDIAITON STEP
        if ($scope.SSLInfoSectionViewModel.IsDCVStepRequired && step < 3) {
            if ($scope.SSLInfoSectionViewModel.ProviderName == 'COMODO') {
                $scope.selecteddcvmethod = $scope.SSLInfoRes.static_SelectOption;
                $scope.primarydomainapproveremail = $scope.SSLInfoRes.static_SelectOption
                $scope.domainstovalidateviaemail = [];
                $scope.domainstovalidateviahttp = [];
                $scope.domainstovalidateviadns = [];
            }
            $scope.dcvUseSameMethodForAllDomains = false;
            for (index = 0; index < $scope.selecteddcvmethodofaddondomain.length; index++) {
                $scope.selecteddcvmethodofaddondomain[index] = '';
                $scope.addonDcvMethodDisabled = false;
            }
        }


    }
    $scope.AddDCVMethodToList = function (validationType, commonName, validationValue, domainType, sanOrder, reqFrom) {

        if (commonName != "" && commonName != undefined && commonName != null) {
            var resultsetItem = [];
            resultsetItem.NAME = commonName;
            resultsetItem.DCV = validationType;
            resultsetItem.SanOrder = sanOrder;
            // IF NOT COMODO AND STATUS IN RENEWAL OR NEWPURCHASE THEN CONSIDER THE EMAIL SELECTED IN APPROVER EMAIL DROP DOWN
            if ($scope.SSLInfoSectionViewModel.ProviderName != 'COMODO' || ($scope.SSLInfoSectionViewModel.ProviderName == 'COMODO' && validationType.toUpperCase() == 'EMAIL' && ($scope.SSLInfoSectionViewModel.Status == 'NEWPURCHASE' || $scope.SSLInfoSectionViewModel.Status == 'NEWRENEWAL'))) {
                if (sanOrder != undefined && reqFrom != 'PAGELOAD')
                    resultsetItem.EMAILADDRESS = validationValue[sanOrder];
                else
                    resultsetItem.EMAILADDRESS = validationValue

            }
                //IF COMODO AND REISSUE THEN EMAIL ADDRESS SHOULD BE EMPTY
            else if ($scope.SSLInfoSectionViewModel.ProviderName == 'COMODO' && validationType.toUpperCase() != 'EMAIL') {
                //IF COMODO AND FILE BASED SELECTED THEN ADD 'HTTPCSRHASH' AS EMAIL ADDRESS
                if (validationType.toUpperCase() == 'FILE') {
                    resultsetItem.EMAILADDRESS = $scope.SSLInfoRes.static_File_Based;
                }
                else {
                    //IF COMODO AND DNS BASED SELECTED THEN ADD 'CNAMECSRHASH' AS EMAIL ADDRESS
                    resultsetItem.EMAILADDRESS = $scope.SSLInfoRes.static_DNS_Based;
                }


            }
            else {
                if (sanOrder != undefined && reqFrom != 'PAGELOAD')
                    resultsetItem.EMAILADDRESS = validationValue[sanOrder];
                else
                    resultsetItem.EMAILADDRESS = validationValue
            }

            resultsetItem.DOMAINTYPE = domainType;
            if (validationType.toUpperCase() == 'EMAIL') {

                for (index = 0; index < $scope.domainstovalidateviaemail.length; index++) {
                    if ($scope.domainstovalidateviaemail[index].NAME == commonName) {
                        $scope.domainstovalidateviaemail[index].DCV = validationType;
                        if (sanOrder != undefined && reqFrom != 'PAGELOAD')
                            $scope.domainstovalidateviaemail[index].EMAILADDRESS = validationValue[sanOrder];
                        else
                            $scope.domainstovalidateviaemail[index].EMAILADDRESS = validationValue;
                        $scope.domainstovalidateviaemail[index].DOMAINTYPE = domainType;
                        break;
                    }
                    else {
                        $scope.RemoveDomainNameFromDCVMethods(commonName, true, true, true);
                        $scope.domainstovalidateviaemail.push(resultsetItem)
                        break;
                    }

                }
                if ($scope.domainstovalidateviaemail.length == 0) {
                    $scope.domainstovalidateviaemail.push(resultsetItem)
                }

                $scope.RemoveDomainNameFromDCVMethods(commonName, false, true, true);
            }
            else if (validationType.toUpperCase() == 'FILE') {

                for (index = 0; index < $scope.domainstovalidateviahttp.length; index++) {
                    if ($scope.domainstovalidateviahttp[index].NAME == commonName) {
                        $scope.domainstovalidateviahttp[index].DCV = validationType;
                        if ($scope.SSLInfoSectionViewModel.ProviderName != 'COMODO')
                            $scope.domainstovalidateviahttp[index].EMAILADDRESS = validationValue;
                        else {
                            if ($scope.SSLInfoSectionViewModel.Status == 'NEWPURCHASE' || $scope.SSLInfoSectionViewModel.Status == 'NEWRENEWAL')
                                $scope.domainstovalidateviahttp[index].EMAILADDRESS = $scope.SSLInfoRes.static_File_Based;
                            else
                                $scope.domainstovalidateviahttp[index].EMAILADDRESS = "";
                        }

                        $scope.domainstovalidateviahttp[index].DOMAINTYPE = domainType;
                        break;
                    }
                    else {
                        $scope.RemoveDomainNameFromDCVMethods(commonName, true, true, true);
                        $scope.domainstovalidateviahttp.push(resultsetItem)
                        break;
                    }
                }
                if ($scope.domainstovalidateviahttp.length == 0) {
                    $scope.domainstovalidateviahttp.push(resultsetItem)
                }
                $scope.RemoveDomainNameFromDCVMethods(commonName, true, false, true);
            }
            else if (validationType.toUpperCase() == 'DNS') {


                for (index = 0; index < $scope.domainstovalidateviadns.length; index++) {
                    if ($scope.domainstovalidateviadns[index].NAME == commonName) {
                        $scope.domainstovalidateviadns[index].DCV = validationType;
                        if ($scope.SSLInfoSectionViewModel.ProviderName != 'COMODO')
                            $scope.domainstovalidateviadns[index].EMAILADDRESS = validationValue;
                        else {
                            if ($scope.SSLInfoSectionViewModel.Status == 'NEWPURCHASE' || $scope.SSLInfoSectionViewModel.Status == 'NEWRENEWAL')
                                $scope.domainstovalidateviadns[index].EMAILADDRESS = $scope.SSLInfoRes.static_DNS_Based;
                            else
                                $scope.domainstovalidateviadns[index].EMAILADDRESS = "";
                        }

                        $scope.domainstovalidateviadns[index].DOMAINTYPE = domainType;
                        break;
                    }
                    else {
                        $scope.RemoveDomainNameFromDCVMethods(commonName, true, true, true);
                        $scope.domainstovalidateviadns.push(resultsetItem)
                        break;
                    }
                }
                if ($scope.domainstovalidateviadns.length == 0) {
                    $scope.domainstovalidateviadns.push(resultsetItem)
                }
                $scope.RemoveDomainNameFromDCVMethods(commonName, true, true, false);
            }
        }

    }


    $scope.ValidateTLD = function (emailValue) {
        var emailExtension = emailValue.split("@")[1];
        if (emailExtension != undefined) {
            var dotIndex = emailExtension.indexOf('.');
            var isValidTld = false;
            if (dotIndex != -1) {
                var emailTLD = emailExtension.substr(dotIndex + 1, emailExtension.length - dotIndex)
                var tldPattern = nc_Val_AlphaAndDot;
                if (emailTLD != "") {
                    if (emailTLD.match(tldPattern)) {
                        isValidTld = true;
                    }
                    else {
                        isValidTld = false;
                    }

                }
            }
            return isValidTld;
        }
    }
    $scope.ClearUnselectedDropdownValidationMsgs = function () {
        if ($scope.frmCallBackContact != undefined) {
            $scope.frmCallBackContact.ddlCallBackMethod.$setValidity('invalidCallBackMethod', true)
        }
    }

    $scope.IsReissueConfirmationOpen = false;
    $scope.ReissueModel = function () { // var instance = this.instance;
        if (!$scope.IsReissueConfirmationOpen) {
            var activeModalInstance = $modal.open({
                templateUrl: "/Common/PromptRemove",
                controller: 'promptRemoveModalCtrl',
                size: 'lg',
                resolve: {
                    modalTitle: function () {

                        return "Certificate Reissue";

                    },
                    modalContent: function () {

                        return $scope.SSLInfoRes.static_ReissuePrompt;
                    }
                }
            });
            activeModalInstance.result.then(function (msg) {
                $scope.IsReissueConfirmationOpen = false;
                if (msg == 'yes') {

                    $scope.ValidateCsr.click();
                }
                //when user click 
            }
            , function () {
                $scope.IsReissueConfirmationOpen = false;
                // any result
                activeModalInstance = null;
            });
            activeModalInstance.opened.then(function () {
                $scope.IsReissueConfirmationOpen = true;
            });
        }
    }
}]);;
app.controller('toolsCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', '$location','notificationService','$timeout','$window',
function ($scope, $rootScope, httpRepository, $filter, $modal, $location, notificationService, $timeout, $window) {
	$scope.pageNotification = new notificationService.instance();

	var startNotification = notificationService.getUrlNotificationKey();
	if (startNotification == 's_dcp') {
		$scope.pageNotification.stuckNotifications.addSuccess(ToolsRes.msg_contactsSavedSuccessfully, { hasClose: true, isAutoHide: true });
	}
	if (startNotification == 's_dnsp') {
		$scope.pageNotification.stuckNotifications.addSuccess(ToolsRes.msg_dnsSavedSuccessfully, { hasClose: true, isAutoHide: true });
	}


}
]);;
app.controller('affiliateCtrl', ['$scope', '$rootScope', 'httpRepository', 'pageHelper', 'notificationService', '$modal','$filter',
function ($scope, $rootScope, httpRepository, pageHelper, notificationService, $modal, $filter) {
    $scope.affiliateResource = AffiliateRes;
    $scope.pageHelper = pageHelper;
    $scope.pageNotification = new notificationService.instance();
    $scope.showDetails = false;
    $scope.isEnabled = false;
    $scope.blocked = false;
    $scope.affiliateBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.activeNotification = new notificationService.instance();
            instance.showLoadPanel = true;
            instance.showNotifications = false;
            instance.showContent = false;
            instance.asyncStatus(pageHelper.AsyncStatus.Loading);
            httpRepository.affiliate.getInfo().then(function (result) {
                result.sender = "getModel";
                instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
            });
            var activeModalInstance = null;
            function showConfirmNmPasswordWindow(modalTitle, modalIntro, confirmFn, alertMsgs) {
                return activeModalInstance = $modal.open({
                    templateUrl: "/Common/ConfirmNmPassword",
                    controller: 'confirmNmPasswordCtrl',
                    size: 'lg',
                    backdrop: 'static',
                    keyboard: false,
                    resolve: {
                        modalTitle: function () {
                            return modalTitle;
                        },
                        modalIntro: function () {
                            return modalIntro;
                        },
                        confirmFn: function () {
                            return confirmFn;
                        },
                        alertMsgs: function () {
                            return alertMsgs;
                        }
                    }
                });
                activeModalInstance.result.then(function () {
                }, function () {
                    activeModalInstance = null;
                });
            }

            instance.setBannersFolder = function($index) {
                instance.banners.selectedIndex = $index;
            };
            instance.onChangeAccess = function () {
                if ($scope.blocked)
                    return;
                var alertMsgs = [];
                instance.model.Active = !instance.model.Active;
                var modalTitle = (!instance.model.Active) ? $scope.affiliateResource.modal_title_TurnOn : $scope.affiliateResource.modal_title_TurnOff;
                var modalIntro = (!instance.model.Active) ? $scope.affiliateResource.modal_intro_TurnOn : $scope.affiliateResource.modal_intro_TurnOff;
                var confirmFn = function (password, modalBehavior) {
                    modalBehavior.asyncStatus(pageHelper.AsyncStatus.Loading);
                    if (!instance.model.Active) {
                        httpRepository.affiliate.turnOn(password).then(function(result) {
                            result.sender = "turnOn";
                            if (result.Error == false) {
                                instance.asyncStatus(pageHelper.AsyncStatus.Success, result);
                                modalBehavior.asyncStatus(pageHelper.AsyncStatus.Success, result);
                            } else {
                                result.Msg = $scope.affiliateResource.msg_TurnOnError;
                                modalBehavior.asyncStatus(pageHelper.AsyncStatus.Error, result);
                            }
                        });
                    }
                    else {
                        httpRepository.affiliate.turnOff(password).then(function(result) {
                            result.sender = "turnOff";
                            if (result.Error == false) {
                                instance.asyncStatus(pageHelper.AsyncStatus.Success, result);
                                modalBehavior.asyncStatus(pageHelper.AsyncStatus.Success, result);
                            } else {
                                result.Msg = $scope.affiliateResource.msg_TurnOffError;
                                modalBehavior.asyncStatus(pageHelper.AsyncStatus.Error, result);
                            }
                        });
                    }
                }
                if (!instance.model.Active)
                    showConfirmNmPasswordWindow(modalTitle, modalIntro, confirmFn, alertMsgs);
            };
            instance.initPageState = function() {
                $scope.isSwitchBtn = true;
                $scope.blocked = false;
                $scope.showDetails = instance.model.Status != $scope.affiliateStatus.NotEnrolled;
                $scope.isEnabled = $scope.showDetails && instance.model.Active && 
                                     instance.model.Status != $scope.affiliateStatus.Blocked;
                $scope.isSwitchBtn = !instance.model.Active;
                var banner = $filter('propertyFilter')(instance.banners.Folders, { 'Height': 200, 'Width': 200 });
                if (banner.length > 0)
                    instance.banners.selectedIndex = instance.banners.Folders.indexOf(banner[0]);
                else instance.banners.selectedIndex = 0;
                var alertMsg = null;
                if (instance.model.Status == $scope.affiliateStatus.Blocked) {
                    alertMsg = $scope.affiliateResource.label_BlockedAlert;
                    $scope.blocked = true;
                    instance.model.Active = false;
                }
                if (alertMsg != null) {
                    $scope.pageNotification.alerts.addWarning(alertMsg, { hasClose: true, isAutoHide: false });
                }
            };


        },
        onSuccess: function (params) {
            var instance = this.instance;

            if (params.sender == 'getModel') {
                instance.model = params.Result;
                httpRepository.affiliate.getBanners().then(function (result) {
                    result.sender = 'getBanners';
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                });
            }
            if (params.sender == 'getBanners') {
                instance.banners = params.Result;
                
                instance.initPageState();
                instance.showContent = true;
            }
            if (params.sender == 'turnOn') {
                $scope.pageNotification.alerts.clear();
                instance.model = params.Result;
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.affiliateResource.msg_TurnOnSuccess, { hasClose: true, isAutoHide: true });
                $scope.showDetails = true;
                $scope.isEnabled = true;
                $scope.isSwitchBtn = false;
            }
            if (params.sender == 'turnOff') {
                $scope.pageNotification.alerts.clear();
                instance.model = params.Result;
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.affiliateResource.msg_TurnOffSuccess, { hasClose: true, isAutoHide: true });
                $scope.isEnabled = false;
            }
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = true;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.alerts.addError(params.Msg, {
                hasClose: true,
                isAutoHide: false
            });
            instance.showNotifications = true;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        }
    });

    $scope.affiliateStatus = {
        NotEnrolled:0,
        Enrolled:1,
        Deleted:2,
        Blocked:3,
        DeletedAndBlocked:4
    }
}])
;
app.controller('apiAccessCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', '$location', 'notificationService', 'pageHelper', '$timeout', '$sce',
function ($scope, $rootScope, httpRepository, $filter, $modal, $location, notificationService, pageHelper, $timeout,  $sce) {

		$scope.apiAccessResource = APIAccessRes;
    var commonButtonTextRes = CommonButtonTextRes;
    //#endregion

    $scope.pageHelper = pageHelper;//for call helpers methods from view
    $scope.pageNotification = new notificationService.instance();
    
    $scope.apiAccessBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.activeNotification = new notificationService.instance();
            instance.asyncStatus(pageHelper.AsyncStatus.Loading);
            httpRepository.apiAccess.get().then(function (result) {
                result.sender = "getModel";
                instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
            });

            var activeModalInstance = null;
            function showConfirmNmPasswordWindow(modalTitle, modalIntro, confirmFn, alertMsgs)
            {
                return activeModalInstance = $modal.open({
                    templateUrl: "/Common/ConfirmNmPassword",
                    controller: 'confirmNmPasswordCtrl',
                    size: 'lg',
                    backdrop: 'static',
                    keyboard: false,
                    resolve: {
                        modalTitle: function () {
                            return modalTitle;
                        },
                        modalIntro: function () {
                            return modalIntro;
                        },
                        confirmFn: function () {
                            return confirmFn;
                        },
                        alertMsgs:function(){
                            return alertMsgs;
                        }
                    }
                });
                activeModalInstance.result.then(function () {
                }, function () {
                    activeModalInstance = null;
                });
            }

            instance.initPageState = function () {
                $scope.submittedStatus = false;
                $scope.isSwitchBtn = true;
                $scope.isManageContent = false;
                $scope.pageNotification.alerts.clear();
                $scope.disableManageBtns = false;
                $scope.disableEditBtn = false;
                $scope.pageIntroEligible = instance.model.CanEnable;
               
                var alertMsg = null;

                switch (instance.model.Status) {
                    case $scope.apiAccessStatus.Never:
                        if (!instance.model.CanEnable) {
                            $scope.pageNotification.alerts.addWarning($scope.apiAccessResource.label_ApiUserDoesNotQualify, { hasClose: true, isAutoHide: false });
                            $scope.isSwitchBtn = false;
                            $scope.submittedStatus = true;
                        }
                        break;
                    case $scope.apiAccessStatus.Disabled:
                        alertMsg = $filter('stringFormat')($scope.apiAccessResource.label_ApiUserAbusiveActivity, [instance.model.DisableReason]);
                        if (!instance.model.WasDisabled)
                        {
                            $scope.submittedStatus = true;
                            $scope.isManageContent = false;
                            $scope.disableManageBtns = true;
                        }
                        else {
                            $scope.submittedStatus = true;
                            $scope.disableEditBtn = true;
                            $scope.isManageContent = true;
                            $scope.disableManageBtns = true;
                        }
                        break;
                    case $scope.apiAccessStatus.Off:
                        $scope.isManageContent = true;
                        $scope.disableManageBtns = true
                        alertMsg = $scope.apiAccessResource.label_ApiTurnedOFF;
                        break;
                    case $scope.apiAccessStatus.On:
                        $scope.pageIntroEligible = true;
                        if (instance.model.WhitelistedIpCount==0)
                        {
                            alertMsg = $scope.apiAccessResource.label_ApiRequestApproved;
                        }
                        $scope.isManageContent = true;
                        break;
                    case $scope.apiAccessStatus.Submitted:
                        $scope.pageIntroEligible = true;
                        $scope.submittedStatus = true;
                        $scope.isManageContent = false;
                        instance.model.Enabled = false;
                        alertMsg = $scope.apiAccessResource.label_ApiDelayBeforeSwitching;
                        break;
                    case $scope.apiAccessStatus.Denied:
                        alertMsg = $scope.apiAccessResource.label_ApiRequestDenied;
                        $scope.submittedStatus = true;
                        $scope.isManageContent = false;
                        instance.model.Enabled = false;
                        break;
                }
                if (alertMsg != null) {
                    $scope.pageNotification.alerts.addWarning(alertMsg, { hasClose: true, isAutoHide: false });
                }
            }

            instance.onChangeAccess = function () {
                
                if ($scope.submittedStatus)
                {
                    return;
                }
                instance.model.Enabled = !instance.model.Enabled;
                var modalTitle = (!instance.model.Enabled) ? $scope.apiAccessResource.modal_title_TurnOnApiAccess : $scope.apiAccessResource.modal_title_TurnOffApiAccess;
                var modalIntro = (!instance.model.Enabled) ? $scope.apiAccessResource.modal_intro_TurnOnApiAccess : $scope.apiAccessResource.modal_intro_TurnOffApiAccess;
                var confirmFn = function (password, modalBehavior) {
                    if (!instance.model.Enabled) {
                        httpRepository.apiAccess.turnOnApiAccess(password).then(function (result) {
                            result.sender = "turnOn";
                            if (result.Error == false) {
                                instance.asyncStatus(pageHelper.AsyncStatus.Success, result);
                                modalBehavior.asyncStatus(pageHelper.AsyncStatus.Success, result);
                            }
                            else {
                                result.Msg = $scope.apiAccessResource.msg_ApiAccessTurnedOnError;
                                modalBehavior.asyncStatus(pageHelper.AsyncStatus.Error, result);
                            }
                        })
                    }
                    else {
                        httpRepository.apiAccess.turnOffApiAccess(password).then(function (result) {
                            result.sender = "turnOff";
                            if (result.Error == false) {
                                instance.asyncStatus(pageHelper.AsyncStatus.Success, result);
                                modalBehavior.asyncStatus(pageHelper.AsyncStatus.Success, result);
                            }
                            else {
                                result.Msg = $scope.apiAccessResource.msg_ApiAccessTurnedOffError;
                                modalBehavior.asyncStatus(pageHelper.AsyncStatus.Error, result);
                            }
                        })
                    }
                }
                var alertMsgs = [];

                showConfirmNmPasswordWindow(modalTitle, modalIntro, confirmFn, alertMsgs)
            }

            instance.resetApiKey = function () {
                var confirmFn = function (password, modalBehavior) {
                    httpRepository.apiAccess.resetApiKey(password).then(function (result) {
                        result.sender = "resetApiKey";
                        if (result.Error == false) {
                            instance.asyncStatus(pageHelper.AsyncStatus.Success, result);
                            modalBehavior.asyncStatus(pageHelper.AsyncStatus.Success, result);
                        }
                        else {
                            result.Msg = $scope.apiAccessResource.msg_ApiAccessResetKeyError;
                            modalBehavior.asyncStatus(pageHelper.AsyncStatus.Error, result);
                        }
                    })
                }
                showConfirmNmPasswordWindow($scope.apiAccessResource.modal_title_ResetApiKey, $scope.apiAccessResource.modal_intro_ResetApiKey, confirmFn)
            }
            instance.updateApiKeyDate = function (data) {
                if (data.LastKeyGenerationDate != null) {
                    instance.model.LastKeyGenerationDate =pageHelper.Date.dateFromJson(data.LastKeyGenerationDate);
                    instance.generateDate = $filter('stringFormat')(data.IsResetApiKey ? $scope.apiAccessResource.label_ApiKeyReset : $scope.apiAccessResource.label_ApiKeyGenerated,
                        [pageHelper.Date.toEstDate(instance.model.LastKeyGenerationDate), pageHelper.Date.toEstTime(instance.model.LastKeyGenerationDate)]);
                }
                else {
                    instance.generateDate = null;
                }
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            
            if (params.sender == 'getModel')
            {
                instance.model = params.Result;
                instance.showContent = true;
                instance.updateApiKeyDate(instance.model);
               
                instance.initPageState();
            }
            else if (params.sender == 'turnOn')
            {
                $scope.pageNotification.alerts.clear();
                instance.model.Status = params.Result.Status
                instance.model.ApiKey == params.Result.ApiKey;
                instance.updateApiKeyDate(params.Result);

                if (instance.model.Status == $scope.apiAccessStatus.On)
                {
                    $scope.pageIntroEligible = true;
                    $scope.submittedStatus = false;
                    $scope.isManageContent = true;
                    $scope.disableManageBtns = false;
                    instance.model.Enabled = true;
                    if (instance.model.WhitelistedIpCount == 0)
                    {
                        $scope.pageNotification.alerts.addWarning($scope.apiAccessResource.label_ApiRequestApproved, { hasClose: true, isAutoHide: false });
                    }
                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.apiAccessResource.msg_ApiAccessTurnedOnSuccess, { hasClose: true, isAutoHide: true });
                    
                }
                else if (instance.model.Status == $scope.apiAccessStatus.Submitted)
                {
                    instance.model.Enabled = false;
                    $scope.submittedStatus = true;
                    $scope.isManageContent = false;
                    $scope.pageNotification.alerts.addWarning($scope.apiAccessResource.label_ApiDelayBeforeSwitching, { hasClose: true, isAutoHide: false });
                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.apiAccessResource.msg_ApiAccessTurnedOnSuccess, { hasClose: true, isAutoHide: true });
                }
            }
            else if (params.sender == 'turnOff')
            {
                $scope.pageNotification.alerts.clear();
                instance.model.Status = $scope.apiAccessStatus.Off
                instance.model.Enabled = false;
                $scope.disableManageBtns = true;
                $scope.pageNotification.alerts.addWarning($scope.apiAccessResource.label_ApiTurnedOFF, { hasClose: true, isAutoHide: false });
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.apiAccessResource.msg_ApiAccessTurnedOffSuccess, { hasClose: true, isAutoHide: true });
   
            }
            else if (params.sender == "resetApiKey") {
                instance.model.ApiKey = params.Result.ApiKey;
                params.Result.IsResetApiKey = true;
                instance.updateApiKeyDate(params.Result);
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.apiAccessResource.msg_ApiAccessResetKeySuccess, { hasClose: true, isAutoHide: true });
            }
           
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
        },
        onLoading: function (params) {
            var instance = this.instance;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                hasClose: true,
                isAutoHide: false
            });
        }
    });

    $scope.apiAccessStatus = {
        Unknown:0,
        Never: 1,
        Submitted: 2,
        Denied: 3,
        On: 4,
        Off: 5,
        Disabled: 6
    }
}]);
;
app.controller('apiAccessEditWhitelistedIpModalCtrl', ['$scope', 'httpRepository', 'pageHelper', 'notificationService', '$filter', '$document', '$modalInstance', 'model', 'isEdit', 'whitelistedBehavior',
	function($scope, httpRepository, pageHelper, notificationService, $filter, $document, $modalInstance, model, isEdit, whitelistedBehavior) {
		var apiAccessResource = APIAccessRes;
		$scope.pageNotification = new notificationService.instance();
		$scope.pageHelper = pageHelper;
		$scope.startAutoFocus = true;
		var errorMessageRes = ErrorMessageRes;
		$scope.oldModel = model;

		$scope.modalBehavior = new pageHelper.AsyncStateBehavior({
			constructor: function() {
				var instance = this.instance;

				instance.requiredName = false; // it's never empty. If it's empty, it's changed to placeholder which is never empty
				instance.model = angular.copy($scope.oldModel);
				instance.existAddreses = [];
				instance.existNames = [];
				instance.setGeoLocation = function(ip) {
					var country = httpRepository.apiAccess.getIpGeoLocation(ip);
					country.then(function(result) {
						var geoLocation = result.Result.Country;
						if ( result.Result.CountIndex != null ) {
							geoLocation += '-' + result.Result.CountIndex;
						}
						instance.model.GeoLocation = geoLocation;
					});
				};

				if (whitelistedBehavior.model.WhitelistedIPs != null && whitelistedBehavior.model.WhitelistedIPs.length > 0) {
					whitelistedBehavior.model.WhitelistedIPs.forEach(function(element) {
						if ($scope.oldModel == null || $scope.oldModel.Name != element.model.Name) {
							instance.existAddreses.push(element.model.Address);
							instance.existNames.push(element.model.Name.toLocaleLowerCase());
						}
					});
				}
				if (instance.model == null) {
					instance.model = {};
				}
				instance.isEdit = isEdit;
				instance.showErrors = false;
				instance.activeNotification = $scope.pageNotification.alerts;
				instance.cancel = function() {
					$modalInstance.dismiss('cancel');
				};
				instance.save = function() {
	
					if (instance.model.Name == '' || instance.model.Name == null) {
						instance.model.Name = instance.model.GeoLocation;
					}

					if ($scope.modalForm.$valid) {

						instance.showErrors = false;
						if (!instance.requiredName && (instance.model.Name == null || instance.model.Name == "")) {
							instance.model.Name = instance.model.GeoLocation;
						}
						
						if (!instance.isEdit) {
							instance.asyncStatus(pageHelper.AsyncStatus.Loading, { sender: "addNew" });

							httpRepository.apiAccess.addWhiteIP(instance.model)
								.then(function(result) {
									if (angular.isDefined(result.Result) && result.Result != null && angular.isDefined(result.Result.IsNamecheapPasswordValid) && !result.Result.IsNamecheapPasswordValid) {
										$scope.modalForm.password.$setValidity('invalidPassword', false);
										instance.asyncStatus(pageHelper.AsyncStatus.Active);
									}
									else {
										result.sender = "addNew";
										instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
									}
								});
						} else {
							if (instance.isEdit && instance.model.Name == model.Name && instance.model.Address == model.Address) {
								instance.cancel();
								return;
							}
							instance.asyncStatus(pageHelper.AsyncStatus.Loading, { sender: "edit" });

							httpRepository.apiAccess.editWhiteIP(model, instance.model)
								.then(function(result) {
									if ( angular.isDefined(result.Result) && result.Result != null && angular.isDefined(result.Result.IsNamecheapPasswordValid) && !result.Result.IsNamecheapPasswordValid) {
										$scope.modalForm.password.$setValidity('invalidPassword', false);
										instance.asyncStatus(pageHelper.AsyncStatus.Active);
									}
									else {
										result.sender = "edit";
										instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
									}
								});
						}
					} else {
						angular.forEach($scope.modalForm.$error.required, function(field) {
							field.$setDirty();
						});

						instance.showErrors = true;
						msg = errorMessageRes.error_FormIsNotValid;

						instance.activeNotification.clear();
						instance.activeNotification.addError(msg, {
							hasClose: true,
							isAutoHide: true,
							onDestroyed: function() {
								instance.activeNotification.clear();
							}
						});
					}
				}
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
			},

			onSuccess: function (params) {
				var instance = this.instance;
				instance.showErrors = false;
				if (params.sender == 'addNew' || params.sender == 'edit') {
					$modalInstance.close(params.Result);
				}
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
			},
			onActive: function(params) {
				var instance = this.instance;
			},
			onLoading: function(params) {
				var instance = this.instance;
			},
			onError: function(params) {
				var instance = this.instance;
				if (instance.activeNotification != null) {
					instance.activeNotification.clear();
				}


				params.Msg = ($scope.oldModel == null) ? apiAccessResource.msg_WhitelistedIpAddError : apiAccessResource.msg_WhitelistedIpUpdateError;
				instance.showErrors = true;
				instance.activeNotification.addError(params.Msg, {
					hasClose: true,
					isAutoHide: true,
					onDestroyed: function() {
						instance.showErrors = false;
					}
				});
			}
		});

		$scope.$watch('modalBehavior.model.Address', function(newValue, oldValue) {
			if (newValue !== oldValue) {
				newValue = (newValue == null) ? "" : newValue.toString();
				var validityIp4 = pageHelper.Validation.ip4(newValue);
				for (var validityName in validityIp4) {

					$scope.modalForm.address['errorMsg_' + validityName] = validityIp4[validityName].arg;
					$scope.modalForm.address.$setValidity(validityName, validityIp4[validityName].isValid);
				}

				$scope.modalForm.address.$setValidity('duplicateName', $scope.modalBehavior.existAddreses.indexOf(newValue) == -1);
				$scope.modalBehavior.setGeoLocation(newValue);
			}
		});


		$scope.$watch('modalBehavior.model.Name', function(newValue, oldValue) {
			if (newValue == "" || newValue == null) {
				$scope.modalBehavior.model.Name = null;
				return;
			}
			if (newValue !== oldValue) {
				newValue = (newValue == null) ? "" : newValue.toString();

				var isDuplicated = $scope.modalBehavior.existNames.indexOf(newValue.toLowerCase()) >= 0;
				$scope.modalForm.name.$setValidity('duplicateName', !isDuplicated);

				$scope.modalForm.name.$setValidity('maxLength', newValue.length < 31);
				var isValid = pageHelper.Validation.characters(newValue, null, /^[a-zA-Z0-9\+\-\.\ \,]+$/, true);
				$scope.modalForm.name.$setValidity('invalidCharacter', isValid.isValid);
			}
		});
		$scope.$watch('modalBehavior.model.password', function(newValue, oldValue) {
			if (newValue !== oldValue) {
				var validity = pageHelper.Validation.namecheapPassword(newValue);
				for (var validityName in validity) {
					$scope.modalForm.password['errorMsg_' + validityName] = validity[validityName].arg;
					$scope.modalForm.password.$setValidity(validityName, validity[validityName].isValid);
				}
				$scope.modalForm.password.$setValidity('invalidPassword', true);
			}
		});


		$document.bind('keydown', function(evt) {
			if (evt.which === 27 && !$scope.modalBehavior.asyncStatus().isDisabled) {
				$scope.modalBehavior.cancel();
			}
		});
		$document.bind('click', function(evt) {
			if (angular.element(evt.target).hasClass("mfp-content") && !$scope.modalBehavior.asyncStatus().isDisabled) {
				$scope.modalBehavior.cancel();
			}
		});
	}
]);
app.controller('apiAccessWhitelistedCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', '$location', 'notificationService', 'pageHelper', '$timeout', '$sce','ncGridParams','forEachChunk',
function ($scope, $rootScope, httpRepository, $filter, $modal, $location, notificationService, pageHelper, $timeout, $sce, ncGridParams, forEachChunk) {
    //#region Local properties
    var apiAccessResource = APIAccessRes;
    var commonButtonTextRes = CommonButtonTextRes;
    //#endregion
    $rootScope.closeLightbox = function () {
        window.location.href = '/Profile/Tools/ApiAccess';
    }
    $scope.pageHelper = pageHelper;//for call helpers methods from view
    $scope.pageNotification = new notificationService.instance();

    $scope.whitelistedBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.showLoadPanel = true;
            instance.showContent = false;
            instance.createIpBehavior = createIpBehavior;
            instance.activeNotification = $scope.pageNotification.stuckNotifications;
            instance.asyncStatus(pageHelper.AsyncStatus.Loading);
            httpRepository.apiAccess.getWhitelistedIPs().then(function (result) {
                result.sender = "getModel";
                instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
            });
            var activeModalInstance = null;
            function showEditModalWindow(item, isEdit) {
                activeModalInstance = $modal.open({
                    templateUrl: "/Profile/Tools/ApiAccess/EditWhitelistedIpModal",
                    controller: 'apiAccessEditWhitelistedIpModalCtrl',
                    size: 'lg',
                    backdrop: 'static',
                    keyboard: false,
                    resolve: {
                        model: function () {
                            return isEdit?item.model:null;
                        },
                        isEdit: function () {
                            return isEdit;
                        },
                        whitelistedBehavior: function () {
                            return instance;
                        }
                    }
                });

                activeModalInstance.result.then(function (ipModel) {
                    if (isEdit) {
                        item.asyncStatus(pageHelper.AsyncStatus.Success, { sender: 'edit', Result: ipModel });
                    }
                    else {
                        instance.whitelistedNgGrid.settings.actions.addNewItem(createIpBehavior(ipModel, instance)).then(function (result) {
                            result.asyncStatus(pageHelper.AsyncStatus.Success, { sender: 'added' });
                            instance.asyncStatus(pageHelper.AsyncStatus.Active);
                        });
                    }
                    activeModalInstance = null;
                }, function () {
                    activeModalInstance = null;
                });
            }
            instance.add = function () {
                showEditModalWindow(null,false)
            }
            instance.edit = function (model) {
                showEditModalWindow(model, true)
            }
            var activeModalInstance = null;
            instance.remove = function (item) {
                var changesItems = [];
                if (item != null) {
                    changesItems.push(item);
                } else {
                    changesItems = instance.whitelistedNgGrid.parameters.selection.selectedItems;
                }
               
                activeModalInstance = $modal.open({
                    templateUrl: "/Common/ConfirmNmPassword",
                    controller: 'confirmNmPasswordCtrl',
                    size: 'lg',
                    backdrop: 'static',
                    keyboard: false,
                    resolve: {
                        modalTitle: function () {
                            var titleKey = (changesItems.length == 1) ? apiAccessResource.modal_title_RemoveWhitelistedIp : apiAccessResource.modal_title_RemoveWhitelistedIps;
                            var titleText = (changesItems.length == 1) ? changesItems[0].model.Name : changesItems.length;
                            return $filter('stringFormat')(titleKey, [titleText]);
                        },
                        modalIntro: function () {
                            return apiAccessResource.modal_intro_RemoveWhitelistedIp;
                        },
                        confirmFn: function () {
                            return function (password, modalBehavior) {
	                            httpRepository.common.checkUser(password).then(function(result) {
	                            	if (result.Error == false && result.Result.IsCorrect == true) {
	                            		modalBehavior.asyncStatus(pageHelper.AsyncStatus.Success, result);
			                            changesItems.forEach(function(element, index, array) {
				                            element.asyncStatus(pageHelper.AsyncStatus.Loading);
			                            });
			                            forEachChunk(changesItems, function(element) {
				                            var promice = httpRepository.apiAccess.removeWhiteIP(element.model, password);
				                            promice.then(function(result) {
					                            result.sender = "remove"; 
					                            element.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
				                            });
				                            return promice;
			                            });
		                            } else {
			                            if (result.Errors[0] == null || (result.Errors[0] != null && result.Errors[0].ErrorFullCode != 1011109)) {
				                            result.Msg = (changesItems.length == 1) ? apiAccessResource.msg_WhitelistedIpRemoveError : apiAccessResource.msg_WhitelistedIpsRemoveError;
			                            }
			                            modalBehavior.asyncStatus(pageHelper.AsyncStatus.Error, result);
		                            }
	                            });
                            };
                        },
                        alertMsgs: function () {
                            return null;
                        }
                    }
                });
                activeModalInstance.result.then(function () {
                }, function () {
                    activeModalInstance = null;
                });
                return activeModalInstance;
            }

            instance.whitelistedNgGrid = new ncGridParams();
            instance.whitelistedNgGrid.parameters.search.serchPropertyNames = ['model.Name', 'model.Address'];
            instance.whitelistedNgGrid.parameters.mapping.isLazyLoading = false;
            instance.whitelistedNgGrid.settings.getData = function ($defer, ncGridState) {
                $defer.resolve({ Data: instance.model.WhitelistedIPs });
            }
            instance.whitelistedNgGrid.settings.selection.canChangeSelection = function (columnData) {
                return columnData.canChangeSelection();
            }

        },
        onSuccess: function (params) {
            var instance = this.instance;
            function addSuccessNotification(msg) {
                instance.activeNotification.clear();
                instance.activeNotification.addSuccess(msg, { hasClose: true, isAutoHide: true });
            }

            if (params.sender == "getModel") {
                instance.showContent = true;
                var tempList = [];
                instance.model = params.Result;
                if (params.Result.WhitelistedIPs != null) {
                	params.Result.WhitelistedIPs.forEach(function (element) {
                		tempList.push(instance.createIpBehavior(element, instance));
                	});
                }
                instance.model.WhitelistedIPs = tempList;
                instance.whitelistedNgGrid.settings.reload();
            }
           
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;
        },
        onLoading: function (params) {
            var instance = this.instance;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            if (params.sender != "getModel") {
                instance.showContent = true;
            }
            
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });

    function createIpBehavior(ipModel, whitelistedBehavior) {
        return new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                instance.activeNotification = whitelistedBehavior.activeNotification;
                instance.model = ipModel;

                instance.updatetSortDate = function () {
                    function takeDecimal(value)
                    {return (value < 10) ? "0"+ value: value;}
                    
                    instance.model.UpdatedDate = pageHelper.Date.dateFromJson(instance.model.UpdatedDate);

                    instance.model.date = pageHelper.Date.toEstDate(instance.model.UpdatedDate);
                    instance.model.time = pageHelper.Date.toEstTime(instance.model.UpdatedDate).toLowerCase();

                    instance.model.timeSortValue = '' + takeDecimal(instance.model.UpdatedDate.getHours()) +
                        takeDecimal(instance.model.UpdatedDate.getMinutes());
                    instance.model.dateSortValue = '' + takeDecimal(instance.model.UpdatedDate.getYear())
                        + takeDecimal(instance.model.UpdatedDate.getMonth()) + takeDecimal(instance.model.UpdatedDate.getDate());

                    instance.model.addressSortValue = Number(instance.model.Address.replace(/\./g, ''));
                    instance.model.nameSortValue = instance.model.Name.toLowerCase();
                }
                instance.updatetSortDate();

                instance.canChangeSelection = function () {
                    return !instance.asyncStatus().isDisabled;
                }
                instance.edit = function () {
                    whitelistedBehavior.edit(instance);
                }
                instance.remove = function () {
                    whitelistedBehavior.remove(instance);
                }
            },
            onSuccess: function (params) {
                var instance = this.instance;
                instance.isDisabled = false;
                function addSuccessNotification(msg) {
                    instance.activeNotification.addSuccess(msg, { hasClose: true, isAutoHide: true });
                }
                if (params.sender == "added") {
                    addSuccessNotification($filter('stringFormat')(apiAccessResource.msg_WhitelistedIpAdded, [instance.model.Name]));
                    //whitelistedBehavior.model.WhitelistedIPs.push(instance);
                }
                else if (params.sender == "edit") {
                    addSuccessNotification($filter('stringFormat')(apiAccessResource.msg_WhitelistedIpUpdated, [instance.model.Name]));
                    instance.model = params.Result;
                    instance.updatetSortDate();
                    var editIndex = whitelistedBehavior.model.WhitelistedIPs.indexOf(instance);
                    if (editIndex != -1) {whitelistedBehavior.model.WhitelistedIPs[editIndex]=instance;}
                }
                if (params.sender == "remove") {
                    whitelistedBehavior.whitelistedNgGrid.settings.actions.removeItem(instance).then(function (result) {
                        addSuccessNotification($filter('stringFormat')(apiAccessResource.msg_WhitelistedIpRemoved, [result.model.Name]));
                        //var removeIndex = whitelistedBehavior.model.WhitelistedIPs.indexOf(instance);
                        //if (removeIndex != -1) {whitelistedBehavior.model.WhitelistedIPs.splice(removeIndex, 1);}
                        instance.asyncStatus(pageHelper.AsyncStatus.Active);
                    });
                }
                //if (instance.activeNotification.destroy != null) { instance.activeNotification.destroy(); }
                //instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(params.Msg, { hasClose: true, isAutoforEachHide: true });
                instance.asyncStatus(pageHelper.AsyncStatus.Active);

            },
            onActive: function (params) {
                var instance = this.instance;
                instance.isDisabled = false;
                instance.showError = false;
            },
            onLoading: function (params) {
                var instance = this.instance;
                instance.showError = false;

                instance.isDisabled = true;
            },
            onLocked: function (params) {
                var instance = this.instance;
                instance.showError = false;
                instance.isDisabled = true;
            },
            onError: function (params) {
                var instance = this.instance;
                instance.isDisabled = false;
                instance.showError = true;

                if (params.sender == "added") {
                    params.Msg=apiAccessResource.msg_WhitelistedIpAddError;
                }
                else if (params.sender == "edit") {
                    params.Msg = apiAccessResource.msg_WhitelistedIpUpdateError;
                }
                else if (params.sender == "remove") {
                    params.Msg = apiAccessResource.msg_WhitelistedIpRemoveError;
                }

                if (instance.activeNotification.destroy != null) { instance.activeNotification.destroy(); }
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true,
                    onDestroyed: function () {
                        instance.showError = false;
                        instance.asyncStatus(pageHelper.AsyncStatus.Active);
                    }
                });
            }
        });
    }
}]);;
app.controller('categoriesAddEditCategoryModalCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$document', '$modalInstance', 'model', '$location', 'notificationService', 'pageHelper', 'categoryList',
function ($scope, $rootScope, httpRepository, $filter, $document, $modalInstance, model, $location, notificationService, pageHelper, categoryList) {

		var categoriesResource = CategoriesRes;

		$scope.oldModel = model;
    $scope.pageHelper = pageHelper;//for call helpers methods from view
    $scope.pageNotification = new notificationService.instance();
    $scope.startAutoFocus = true;
	
    $scope.modalBehavior = new pageHelper.AsyncStateBehavior({
    	constructor: function() {
		    var instance = this.instance;
		    instance.model = angular.copy($scope.oldModel);
		    instance.categoryList = categoryList;
		    instance.showErrors = false;
		    instance.activeNotification = $scope.pageNotification.alerts;

		    instance.cancel = function() {
				    $modalInstance.dismiss('cancel');
			    },
			    instance.save = function () {
			    	if ($scope.modalForm.$valid)
			    	{
			    		instance.asyncStatus(pageHelper.AsyncStatus.Loading);
			    		if ($scope.oldModel == null) { // add
			    			httpRepository.category.addCategory(instance.model.CategoryName)
									.then(function (result) {

										if ( result.Error == true ) {
											result.Msg = ErrorMessageRes.error_failedToSave;
										}

										instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
									});
			    		} else { // edit

			    			if ($scope.oldModel.CategoryName == instance.model.CategoryName) {
			    				instance.asyncStatus(pageHelper.AsyncStatus.Success);
			    				return;
			    			}

			    			httpRepository.category.editCategory($scope.oldModel.CategoryName, instance.model.CategoryName)
									.then(function (result) {

										if (result.Error == true) {
											result.Msg = ErrorMessageRes.error_failedToSave;
										}

										instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
									});
			    		}

			    	} 
			    else 
			    	{
			    		angular.forEach($scope.modalForm.$error.required, function (field) {
			    			field.$setDirty();
			    		});

			    		instance.showErrors = true;
			    		var msg = categoriesResource.error_FormIsNotValid;

			    		instance.activeNotification.clear();
			    		instance.activeNotification.addError(msg, {
			    			hasClose: true,
			    			isAutoHide: true,
			    			onDestroyed: function () {
			    				instance.activeNotification.clear();
			    			}
			    		});
				    }
			    }
	    },
	    onLoading: function (params) {
    		var instance = this.instance;
    	},
    	onSuccess: function(params) {
    		var instance = this.instance;
    		instance.showErrors = false;
    		$modalInstance.close(instance.model.CategoryName);
    	},
    	onError: function (params) {
    		var instance = this.instance;
    		if (instance.activeNotification != null) {
    			instance.activeNotification.clear();
    		}
    			instance.showErrors = true;
    			instance.activeNotification.addError(params.Msg, {
    				hasClose: true,
    				isAutoHide: true,
    				onDestroyed: function () {
    					instance.showErrors = false;
    				}
    			});
    		
    	}
    });

    $scope.$watch('modalBehavior.model.CategoryName', function (newValue, oldValue) {
    	if (newValue == "" || newValue == null) {
    		if ($scope.modalBehavior.model != null)
    			$scope.modalBehavior.model.CategoryName = null;
    		return;
    	}

	    if (newValue !== oldValue) {
	    	var isDuplicated = $scope.modalBehavior.categoryList.indexOf(newValue.toLowerCase()) >= 0;
		    $scope.modalForm.categoryName.$setValidity('duplicateName', !isDuplicated);

		    $scope.modalForm.categoryName.$setValidity('maxLength', newValue.length <= 30);

		    var isValid = true;
		    
		    for (var i = 0; i < newValue.length; i++) {
		        if ( newValue[i] < ' ' || newValue[i] > 'z' || newValue[i] == '<') {
			    	isValid = false;
			    }
		    }
    		$scope.modalForm.categoryName.$setValidity('invalidCharacter', isValid);
    	}
    });


    $document.bind('keydown', function (evt) {
    	if (evt.which === 27 && !$scope.modalBehavior.asyncStatus().isDisabled) {
    		$scope.modalBehavior.cancel();
    	}
    });
    $document.bind('click', function (evt) {
    	if (angular.element(evt.target).hasClass("mfp-content") && !$scope.modalBehavior.asyncStatus().isDisabled) {
    		$scope.modalBehavior.cancel();
    	}
    });


}]);;
app.controller('categoriesCtrl', [
	'$scope', '$rootScope', 'httpRepository', '$filter', '$modal', '$location', 'notificationService', 'pageHelper', '$timeout', '$sce', 'ncGridParams',
	function ($scope, $rootScope, httpRepository, $filter, $modal, $location, notificationService, pageHelper, $timeout, $sce, ncGridParams) {

	    $scope.categoriesResource = CategoriesRes;

	    $scope.pageHelper = pageHelper; //for call helpers methods from view
	    $scope.pageNotification = new notificationService.instance();
	    $scope.totalDomainsToDel = 0;
	    $scope.errorCount = 0;

	    $scope.pageBehavior = new pageHelper.AsyncStateBehavior({
	        constructor: function () {
	            var instance = this.instance;
							instance.showLoadPanel = true;
	            instance.activeNotification = new notificationService.instance();
	            instance.asyncStatus(pageHelper.AsyncStatus.Loading);
	            httpRepository.category.get().then(function (result) {
	            		result.sender = "getModel";
									instance.showLoadPanel = false;
	                instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
	            });

	            instance.categoryNgGrid = new ncGridParams();
	            instance.categoryNgGrid.parameters.search.serchPropertyNames = ['model.CategoryNameSortValue'];
	            instance.categoryNgGrid.parameters.mapping.isLazyLoading = false;
	            instance.categoryNgGrid.settings.getData = function ($defer, ncGridState) {
	                $defer.resolve({ Data: instance.model });
	            }
	            instance.categoryNgGrid.settings.selection.canChangeSelection = function (columnData) {
	                return columnData.canChangeSelection();
	            }

	            instance.edit = function (categoryModel) {

	                var activeModalInstance = $modal.open({
	                    templateUrl: "/Profile/Tools/Categories/AddEditCategory",
	                    controller: 'categoriesAddEditCategoryModalCtrl',
	                    size: 'lg',
	                    backdrop: 'static',
	                    keyboard: false,
	                    resolve: {
	                        categoryList: function () {
	                            var list = [];
	                            instance.model.forEach(function (element) {
	                            	if (element.model.CategoryName != null) {
	                            		if (categoryModel == null)
	                            			list.push(element.model.CategoryName.toLowerCase());
	                            		else if (element.model.CategoryName != categoryModel.model.CategoryName) {
	                            			list.push(element.model.CategoryName.toLowerCase());
	                            		}
		                            }
	                            });
	                            return list;
	                        },
	                        model: function () {
	                            return (categoryModel == null) ? null : categoryModel.model;
	                        }
	                    }
	                });
	                activeModalInstance.result.then(function (result) {
	                    instance.activeNotification = $scope.pageNotification.alerts.clear();
	                    if (categoryModel == null) {
	                        var newCategoryBehavior = categoryBehavior({ CategoryName: result, DomainsQuantity: 0 }, instance);
	                        newCategoryBehavior.asyncStatus(pageHelper.AsyncStatus.Success, { sender: 'addNew' });
	                    } else {
	                        categoryModel.model.CategoryNameSortValue = result.toLowerCase();
	                        categoryModel.asyncStatus(pageHelper.AsyncStatus.Success, { sender: 'editCategory' });

	                        categoryModel.model.CategoryName = result;
	                    }
	                }, function () {
	                    activeModalInstance = null;
	                });
	                return activeModalInstance;
	            }


	            instance.remove = function (item) {
	                var changesItems = [];
	                $scope.totalDomainsToDel = 0;
	                instance.activeNotification = $scope.pageNotification.alerts.clear();
	                if (item != null) {
	                    $scope.totalDomainsToDel = item.model.DomainsQuantity;
	                    changesItems.push(item);
	                } else {
	                    changesItems = instance.categoryNgGrid.parameters.selection.selectedItems;
	                    changesItems.forEach(function (element) {
	                        $scope.totalDomainsToDel += element.model.DomainsQuantity;
	                    });
	                }

	                if ($scope.totalDomainsToDel == 0) {
	                    changesItems.forEach(function (element) {
	                        element.asyncStatus(pageHelper.AsyncStatus.Loading);
	                    });

	                    changesItems.forEach(function (element) {
	                        httpRepository.category.deleteCategory(element.model.CategoryName, null)
										.then(function (result) {
										    result.sender = 'remove';
										    element.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
										});
	                    });
	                    return;
	                }

	                var activeModalInstance = $modal.open({
	                    templateUrl: "/Profile/Tools/Categories/RemoveCategory",
	                    controller: 'categoriesRemoveCategoryModalCtrl',
	                    size: 'lg',
	                    backdrop: 'static',
	                    keyboard: false,
	                    resolve: {
	                        categoryList: function () {
	                            var list = [];
	                            instance.model.forEach(function (element) {
	                                if (changesItems.indexOf(element) == -1) {
	                                    list.push(element.model.CategoryName);
	                                }
	                            });
	                            return list;
	                        },
	                        categoriesToDelQuantity: function () {
	                            return changesItems.length;
	                        }
	                    }
	                });

	                activeModalInstance.result.then(function (modalResult) {
	                    instance.asyncStatus(pageHelper.AsyncStatus.Loading);

	                    changesItems.forEach(function (element) {
	                        element.asyncStatus(pageHelper.AsyncStatus.Loading);
	                    });

	                    changesItems.forEach(function (element) {
	                        httpRepository.category.deleteCategory(element.model.CategoryName, modalResult.newCategoryName)
                                        .then(function (result) {

                                            result.sender = 'remove';
                                            element.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                                        });
	                    });

	                }, function () {
	                    activeModalInstance = null;
	                });
	            }
	        },
	        onSuccess: function (params) {
	            var instance = this.instance;
	            if (params.sender == 'getModel') {
	                instance.model = [];
	                var testList = [];
	                params.Result.Categories.forEach(function (element) {
	                    testList.push(categoryBehavior(element, instance));
	                });
	                instance.model = testList;
	                instance.categoryNgGrid.settings.reload();
	                instance.showContent = true;
	            }
	            instance.asyncStatus(pageHelper.AsyncStatus.Active);
	        },
	        onActive: function (params) {
	            var instance = this.instance;
	        },
	        onLoading: function (params) {
	            var instance = this.instance;
	        },
	        onLocked: function (params) {
	            var instance = this.instance;
	        },
	        onError: function (params) {
	            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
	                hasClose: true,
	                isAutoHide: false
	            });
	        }
	    });

	    function categoryBehavior(categoryModel, pageBehavior) {
	        return new pageHelper.AsyncStateBehavior({
	            constructor: function () {
	                var instance = this.instance;
	                instance.model = categoryModel;
	                if (instance.model.CategoryName) {
	                    instance.model.CategoryNameSortValue = instance.model.CategoryName.toLowerCase();
	                }
	                instance.canChangeSelection = function () {
	                    return !instance.asyncStatus().isDisabled;
	                }
	                instance.remove = function () {
	                    pageBehavior.remove(instance);
	                }

	                instance.edit = function () {
	                    pageBehavior.edit(instance);
	                }

	            },
	            onSuccess: function (params) {
	                var instance = this.instance;
	                instance.showContextualError = false;
	                if (params.sender == 'addNew') {

	                    pageBehavior.categoryNgGrid.settings.actions.addNewItem(instance).then(function () {
	                        var messageDyn1 = $filter('stringFormat')($scope.categoriesResource.msg_add_category_successFormat, [instance.model.CategoryName]);
	                        instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(messageDyn1, { hasClose: true, isAutoHide: true });
	                    });
	                }
	                if (params.sender == 'editCategory') {
	                	var messageDyn = $filter('stringFormat')($scope.categoriesResource.msg_dynamic_edit_SuccessFormat, [instance.model.CategoryName]);
	                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(messageDyn, { hasClose: true, isAutoHide: true });
	                }
	                if (params.sender == 'remove') {
	                    pageBehavior.categoryNgGrid.settings.actions.removeItem(instance).then(function (result) {
	                        if (params.Result != null) {
	                            pageBehavior.model.forEach(function (element) {
	                                if (params.Result.CategoryName != null && element.model.CategoryName == params.Result.CategoryName) {
	                                    element.model.DomainsQuantity = params.Result.DomainsQuantity;
	                                }
	                            });
	                        }

	                        var message = $filter('stringFormat')($scope.categoriesResource.msg_remove_category_success, [instance.model.CategoryName]);
	                        instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(message, { hasClose: true, isAutoHide: true });

	                        instance.asyncStatus(pageHelper.AsyncStatus.Active);
	                    });
	                }
	                instance.asyncStatus(pageHelper.AsyncStatus.Active);
	            },
	            onActive: function (params) {
	                var instance = this.instance;
	            },
	            onLoading: function (params) {
	                var instance = this.instance;
	                instance.showContextualError = false;
	                $scope.errorCount = 0;
	            },
	            onLocked: function (params) {
	                var instance = this.instance;
	            },
	            onError: function (params) {
	                var instance = this.instance;
	                $scope.errorCount++;
	                instance.showContextualError = true;

	                if (params.sender == 'remove' && $scope.errorCount > 0) {
	                    params.Msg = ($scope.errorCount < 2) ? $scope.categoriesResource.msg_site_remove_ErrorFormat : $scope.categoriesResource.msg_site_remove_multiple_ErrorFormat;
	                }

	                if (instance.activeNotification.destroy != null) {
	                    instance.activeNotification.destroy();
	                }

	                if ($scope.errorCount > 0)
	                {
	                    instance.activeNotification = $scope.pageNotification.alerts.clear();
	                    instance.activeNotification = $scope.pageNotification.alerts.addError(params.Msg, {
	                        hasClose: true,
	                        isAutoHide: true
	                    });
	                    instance.showNotifications = true;
	                    instance.showHeader = true;
	                    instance.asyncStatus(pageHelper.AsyncStatus.Active);
	                }
	            }
	        });
	    }
	}
]);;
app.controller('categoriesEditCategoryModalCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$document', '$modalInstance', 'model', '$location', 'notificationService', 'pageHelper',
function ($scope, $rootScope, httpRepository, $filter, $document, $modalInstance, model, $location, notificationService, pageHelper) {

//	  var commonButtonTextRes = CommonButtonTextRes;

    //#endregio

    $scope.pageHelper = pageHelper;//for call helpers methods from view
    $scope.pageNotification = new notificationService.instance();
	
    $scope.modalBehavior = new pageHelper.AsyncStateBehavior({
    	constructor: function () {
    		var instance = this.instance;
    		instance.requiredName = true;
    		instance.model = angular.copy($scope.oldModel);
    		instance.existAddreses = [];
    		instance.existNames = [];
    		instance.showErrors = false;
    		instance.activeNotification = $scope.pageNotification.alerts;

    		instance.cancel = function () {
    			$modalInstance.dismiss('cancel');
    		},
		    instance.save = function() {
			    return null;
		    }
    	}
    });

    $document.bind('keydown', function (evt) {
    	if (evt.which === 27 && !$scope.modalBehavior.asyncStatus().isDisabled) {
    		$scope.modalBehavior.cancel();
    	}
    });
    $document.bind('click', function (evt) {
    	if (angular.element(evt.target).hasClass("mfp-content") && !$scope.modalBehavior.asyncStatus().isDisabled) {
    		$scope.modalBehavior.cancel();
    	}
    });


}]);;
app.controller('categoriesRemoveCategoryModalCtrl', [
	'$scope', '$rootScope', 'httpRepository', '$filter', '$document', '$modalInstance', '$location', 'notificationService', 'pageHelper', 'categoryList', 'categoriesToDelQuantity',
	function ($scope, $rootScope, httpRepository, $filter, $document, $modalInstance, $location, notificationService, pageHelper, categoryList, categoriesToDelQuantity) {
		var categoriesResource = CategoriesRes;
		$scope.select2Options = { minimumResultsForSearch: 10 };
		//#endregio
		$scope.pageHelper = pageHelper; //for call helpers methods from view
		$scope.pageNotification = new notificationService.instance();

		$scope.modalBehavior = new pageHelper.AsyncStateBehavior({
			constructor: function() {
				var instance = this.instance;
				instance.requiredName = true;
				instance.categoryList = categoryList;
				instance.categoriesToDelQuantity = categoriesToDelQuantity;

				instance.showErrors = false;
				instance.activeNotification = $scope.pageNotification.alerts;


				instance.cancel = function() {
						$modalInstance.dismiss('cancel');
				}

				instance.remove = function () {
					instance.asyncStatus(pageHelper.AsyncStatus.Loading);

					$modalInstance.close({
						 newCategoryName: instance.asignTo
					});
					}
			},
			onActive: function () {
				var instance = this.instance;
			},
			onLoading: function(params) {
				var instance = this.instance;
			},
			onSuccess: function(params) {
				var instance = this.instance;
				instance.showErrors = false;
			
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
			},
			onError: function(params) {
				var instance = this.instance;
				if (instance.activeNotification != null) {
					instance.activeNotification.clear();
				}

				instance.showErrors = true;
				instance.activeNotification.addError(params.Msg, {
					hasClose: true,
					isAutoHide: true,
					onDestroyed: function() {
						instance.showErrors = false;
					}
				});

			}
		});

		$document.bind('keydown', function(evt) {
			if (evt.which === 27 && !$scope.modalBehavior.asyncStatus().isDisabled) {
				$scope.modalBehavior.cancel();
			}
		});
		$document.bind('click', function(evt) {
			if (angular.element(evt.target).hasClass("mfp-content") && !$scope.modalBehavior.asyncStatus().isDisabled) {
				$scope.modalBehavior.cancel();
			}
		});
	}
]);;
app.controller('dnsSettingsCtrl', ['$rootScope', '$scope', '$rootScope', 'httpRepository', 'pageHelper', 'notificationService', '$modal', '$filter', '$timeout',
function ($rootScope, $scope, $rootScope, httpRepository, pageHelper, notificationService, $modal, $filter, $timeout) {
    $rootScope.closeLightbox = function () {
        window.location.href = '/Profile/Tools/';
    }
    $scope.dnsServerType = {
        Default: 0,
        Custom: 1
    }

    var modelInit = null;

    $scope.resources = DnsSettingsRes;
    $scope.pageHelper = pageHelper;
    $scope.pageNotification = new notificationService.instance();
    $scope.select2Options = { minimumResultsForSearch: -1 };

    $scope.$watch('behavior.model.ForwardTo', function (newValue, oldValue) {
    	if (newValue !== oldValue && $scope.DnsSettingsForm.destinationEmail) {
    	    if (newValue == null) { newValue = ""; }
            var isValid = pageHelper.Validation.email(newValue);
            $scope.DnsSettingsForm.destinationEmail.$setValidity('invalidEmailFormat', isValid.isValid);

            var maxLength = 128;
            $scope.DnsSettingsForm.destinationEmail.$setValidity('destinationEmailMaxLength', newValue.length <= maxLength);
            $scope.DnsSettingsForm.destinationEmail.errorMsg_maxLength = maxLength;
        }
    });

    $scope.$watch('behavior.model.ForwardingUrl', function (newValue, oldValue) {
    	if (newValue !== oldValue && $scope.DnsSettingsForm.destinationUrl) {
    		if (newValue == null) { newValue = ""; }
		    var maxLength = 255;
            $scope.DnsSettingsForm.destinationUrl.$setValidity('urlMaxLength', newValue.length <= maxLength);
            $scope.DnsSettingsForm.destinationUrl.errorMsg_maxLength = maxLength;
        }
    });

    $scope.$watch('behavior.model.Email', function (newValue, oldValue) {
    	if (newValue !== oldValue && $scope.DnsSettingsForm.forwarder) {
    		if (newValue == null) { newValue = ""; }
            var isValid = pageHelper.Validation.emailForwarder(newValue);
            $scope.DnsSettingsForm.forwarder.$setValidity('invalidEmailForwarderFormat', isValid.isValid);

            var maxLength = 63;
            $scope.DnsSettingsForm.forwarder.$setValidity('EmailForwardeMaxLength', newValue.length <= maxLength);
            $scope.DnsSettingsForm.forwarder.errorMsg_maxLength = maxLength;
        }
    });

    $scope.behavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.activeNotification = new notificationService.instance();
            instance.showLoadPanel = false;
            instance.showNotifications = false;
            instance.showHeader = false;
            instance.showContent = false;
            instance.asyncStatus(pageHelper.AsyncStatus.Loading);
            httpRepository.dnsSettings.getInfo().then(function (result) {
                result.sender = "getModel";

                instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
            });

            instance.save = function () {
            	if (instance.model.DnsProvider == $scope.dnsServerType.Custom) {
            		var nss = instance.model.CustomNameservers;
            		for (i = 0; i < nss.length; i++) {
            			$scope.onNameChange(nss[i]);
            		}
            	} 

            	if ($scope.DnsSettingsForm.$valid) {
            			instance.asyncStatus(pageHelper.AsyncStatus.Loading, { sender: "save" });

			            if (JSON.parse(instance.model.NamecheapDefaultUrlForwardig) == true)
                        instance.model.ForwardingUrl = '';
                    else if (JSON.parse(instance.model.NamecheapDefaultUrlForwardig) == false) {
                        instance.model.ForwardingUrl = checkUrlPrefix(instance.model.ForwardingUrl);
                    }

                    if (JSON.parse(instance.model.NamecheapDefaultEmailForwardig) == true) {
                        instance.model.Email = '';
                        instance.model.ForwardTo = '';
                    }

                    httpRepository.dnsSettings.save(instance.model).then(function (result) {
                    	result.sender = "save";
                    	if (result.Error==true) {
                    		// redirect to /Profile/Tools?notificationKey=s_dnsp   // s_dnsp is the success status
                    		$rootScope.scroolToElement($('[link="pageNotification"]'), 100);
	                    }
                    	instance.asyncStatus((result.Error == false) ? window.location.href = '/Profile/Tools?notificationKey=s_dnsp' : instance.asyncStatus(pageHelper.AsyncStatus.Error, { Msg: ErrorMessageRes.error_FaildToSaveDns }), result);
                    });
                }
                else {
                	var firstInvalideElementName = null;
	                if ($scope.DnsSettingsForm.$error.required) {
		                firstInvalideElementName = $scope.DnsSettingsForm.$error.required[0];
	                } else {
	                	firstInvalideElementName = $scope.DnsSettingsForm.$error[Object.keys($scope.DnsSettingsForm.$error)[0]][0];
	                }
	                angular.forEach($scope.DnsSettingsForm.$error.required, function (field) {
                      field.$setDirty();
									});
									if (firstInvalideElementName) {
										$rootScope.scroolToElement($('[name=' + firstInvalideElementName.$name + ']'), 100);
	                }
	                instance.asyncStatus(pageHelper.AsyncStatus.Error, { Msg: ErrorMessageRes.error_NotAllFieldsFilledCorrectly });
                }
            };
        },
        onSuccess: function (params) {
            var instance = this.instance;

            if (params.sender == 'getModel') {
                instance.model = params.Result;
                instance.model.NamecheapDefaultUrlForwardig = instance.model.NamecheapDefaultUrlForwardig.toString();
                instance.model.NamecheapDefaultEmailForwardig = instance.model.NamecheapDefaultEmailForwardig.toString();
                modelInit = {};
                copyDataFromModel(modelInit, instance.model);
                instance.showNotifications = true;
                instance.showHeader = true;
                instance.showContent = true;
                instance.model.CustomNameservers.forEach(function(element,index) {
                    if (index < 2) {
                        element.toolTipText = $scope.resources.label_NameserverIteratorInfo;
                    } else {
                        element.toolTipText = $scope.resources.label_NameserverIteratorInfoOptional;
                    }
                });
	            $timeout(function() {
	            	var nss = instance.model.CustomNameservers;
	            	for (i = 0; i < nss.length; i++) {
	            		$scope.onNameChange(nss[i]);
		            }
	            });
            }
            if (params.sender == 'save') {
                $rootScope.closeLightbox();
                copyDataFromModel(modelInit, instance.model);
            }
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
        },
        onLoading: function (params) {
        	var instance = this.instance;
        	if (params.sender != 'save') {
        		instance.showLoadPanel = true;
	        }
        },
        onError: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.alerts.addError(params.Msg, {
                hasClose: true,
                isAutoHide: false
            });
            instance.showNotifications = true;
            instance.showHeader = true;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        }
    });

    $scope.onNameChange = function (item) {
        var isEmpty = (item.Name == "" || item.Name == null);
        var notDuplicated = isEmpty ? true :  !itemIsDuplicated(item);
        $scope.DnsSettingsForm['nameserver' + item.Idx].$setValidity('NsDuplicated', notDuplicated);
    };

    var itemIsDuplicated = function (item)
    {
        var isDuplicated = false;
        var instance = $scope.behavior;
        var i, nss = instance.model.CustomNameservers;
        var t = 0;
        for (i = 0; i < nss.length; i++) {
            if (item.Name == nss[i].Name) {
                t++;
                isDuplicated = t>1;
            }
        }
        return isDuplicated;
    }

    $scope.onDnsCustomTypeChange = function () {
        var instance = $scope.behavior;
        instance.model.NamecheapDefaultUrlForwardig = modelInit.NamecheapDefaultUrlForwardig;
        instance.model.ForwardingUrl = modelInit.ForwardingUrl;
        instance.model.ForwardingType = modelInit.ForwardingType;
        instance.model.NamecheapDefaultEmailForwardig = modelInit.NamecheapDefaultEmailForwardig;
        instance.model.Email = modelInit.Email;
        instance.model.ForwardTo = modelInit.ForwardTo;
    };

    var checkUrlPrefix = function (url) {
        var requiredHttpPrefix = "http://";
        var requiredHttpsPrefix = "https://";
        if (url.substring(0, 7).toString() != requiredHttpPrefix && url.substring(0, 8).toString() != requiredHttpsPrefix)
            return requiredHttpPrefix.concat(url);
        else
            return url;
    }

    var copyDataFromModel = function (modelInit, copyModel) {
        modelInit.NamecheapDefaultUrlForwardig = copyModel.NamecheapDefaultUrlForwardig;
        modelInit.ForwardingUrl = copyModel.ForwardingUrl;
        modelInit.ForwardingType = copyModel.ForwardingType;
        modelInit.NamecheapDefaultEmailForwardig = copyModel.NamecheapDefaultEmailForwardig;
        modelInit.Email = copyModel.Email;
        modelInit.ForwardTo = copyModel.ForwardTo;
    }
}]);;
app.controller('createNewContactModalCtrl', ['$scope', '$rootScope', 'httpRepository', 'notificationService', 'pageHelper', '$modalInstance', 'modalInteraction', '$document',
	function ($scope, $rootScope, httpRepository, notificationService, pageHelper, $modalInstance, modalInteraction, $document) {

		$scope.pageNotification = new notificationService.instance();
		var errorMessageRes = ErrorMessageRes;
		$scope.pageHelper = pageHelper;
		$scope.modalBehavior = new pageHelper.AsyncStateBehavior({
			constructor: function () {

				var instance = this.instance;
				instance.bulkData = {};
				instance.model = {};

				instance.activeNotification = new notificationService.instance();
				instance.asyncStatus(pageHelper.AsyncStatus.Loading);

				var modalContactType = modalInteraction.contactType;

				instance.isRegistrantContact = modalContactType == 1;
				instance.isAdministrativeContact = modalContactType == 2;
				instance.isTechnicalContact = modalContactType == 3;
				instance.isBillingContact = modalContactType == 4;

				instance.showErrors = false;

				httpRepository.userContacts.getUserAddContactModel().then(function (result) {
					result.sender = "getModel";
					if (result.Error == false) {
						$rootScope.userAddContactModel = angular.copy(result);
					}
					instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
				});

				instance.onAddressNameChanged = function () {
					var currentName = this.model.addressName || '';

					this.isNameEmpty = currentName === '';

					this.isNameAlreadyExists = false;

					if (this.isAddressNameCanBeChanged) {

						for (var i = 0; i < this.bulkData.existingNames.length; i++) {

							var addressName = this.bulkData.existingNames[i].AddressName;
							if (addressName == null) {
								addressName = '';
							}

							if (addressName.toLowerCase() === currentName.toLowerCase()) {
								this.isNameAlreadyExists = true;
							}
						}

					}

					this.isNameValid = this.isNameEmpty || currentName.match(nc_Val_EnglishNameAndNumbers);
				};

				instance.isNameValidFull = function () {
					return !this.isNameAlreadyExists && this.isNameValid && !this.isAddressNameTooLong();
				};

				instance.isAddressNameTooLong = function() {
					var currentName = this.model.addressName || '';
					return currentName.length > 30;
				};


				instance.onFirstNameChanged = function () {
					var currentName = this.model.firstName || '';

					this.isFirstNameEmpty = currentName === '';
					this.isFirstNameValid = this.isFirstNameEmpty || currentName.match(nc_Val_FnameLnameRegExpression);
				};

				instance.isFirstNameValidFull = function () {

					return !this.isFirstNameEmpty && this.isFirstNameValid;
				};


				instance.onLastNameChanged = function () {
					var currentName = this.model.lastName || '';

					this.isLastNameEmpty = currentName === '';
					this.isLastNameValid = this.isLastNameEmpty || currentName.match(nc_Val_FnameLnameRegExpression);

				};

				instance.isLastNameValidFull = function () {

					return !this.isLastNameEmpty && this.isLastNameValid;
				};

				instance.onCompanyNameChanged = function () {
					var currentName = this.model.companyName || '';

					this.isCompanyNameEmptyAndRequired = currentName === '' && this.model.isCompanyAddress;
					this.isCompanyNameValid = currentName === '' || currentName.match(nc_Val_OrgCompanyNameRegExpression) || !this.model.isCompanyAddress;
				};

				instance.isCompanyNameValidFull = function () {

					return !this.isCompanyNameEmptyAndRequired && this.isCompanyNameValid;
				};

				instance.onJobTitleChanged = function () {
					var currentName = this.model.jobTitle || '';

					this.isJobTitleEmptyAndRequired = currentName === '' && this.model.isCompanyAddress;
					this.isJobTitleValid = currentName === '' || currentName.match(nc_Val_FnameLnameRegExpression) || !this.model.isCompanyAddress;
				};

				instance.isJobTitleValidFull = function () {

					return this.isJobTitleValid && !this.isJobTitleEmptyAndRequired;
				};

				instance.onAddress1Changed = function () {
					var currentName = this.model.address1 || '';

					this.isAddress1Empty = currentName === '';
					this.isAddress1Valid = this.isAddress1Empty || currentName.match(nc_Val_AddressRegex);
				};

				instance.isAddress1ValidFull = function () {

					return !this.isAddress1Empty && this.isAddress1Valid;
				};

				instance.onAddress2Changed = function () {
					var currentName = this.model.address2 || '';

					this.isAddress2Valid = currentName === '' || currentName.match(nc_Val_AddressRegex);
				};

				instance.isAddress2ValidFull = function () {

					return this.isAddress2Valid;
				};


				instance.onStateChanged = function () {
					var currentName = (this.model.state || '').toUpperCase();

					this.isStateEmpty = currentName === '';


					var isTwoCapitals = currentName.match(nc_Val_TwoCapitalsRegex);
					var isGeneralSymbols = currentName.match(nc_Val_StateRegex);

					var isCountryKnown = (this.model.country == "US") || (this.model.country == "CA");

					this.isStateValid = true;

					if (isCountryKnown && !isTwoCapitals) {
						this.stateValidationMessage = AddressValidationRes.error_Site_StateProvinceExceedErrorMessage;
						this.isStateValid = false;
					}
					
					if (!isCountryKnown && !isGeneralSymbols) {
						this.stateValidationMessage = AddressValidationRes.error_invalidCharacters;
						this.isStateValid = false;
					}

					this.isStateValid = this.isStateEmpty || this.isStateValid;

					var isCountryFound = false;

					var stateArray = this.bulkData.states;

					// check for known countries
					if (stateArray) {
						for (var i = 0; i < stateArray.length; i++) {
							if (this.model.country == stateArray[i].CountryCode) {
								isCountryFound = true;
								break;
							}
						}
					}  
					// this country doesn't have known states, let's accept any 2 capitals
					if (!isCountryFound) {
						return;
					}

					// this is known country like US or Canada, it should contain only specific states
					
					if ( isTwoCapitals ) {
						for (i = 0; i < stateArray.length; i++) {
							if ((this.model.country == stateArray[i].CountryCode) && (currentName == stateArray[i].StateCode)) {
								// it's OK, we've found the correct state
								return;
							}
						}

						this.stateValidationMessage = AddressValidationRes.error_Site_StateProvinceErrorMessage;
						this.isStateValid = false;
						return;
					}

					// trying to substitute full state name to state code

					for (i = 0; i < stateArray.length; i++) {
						if ((this.model.country == stateArray[i].CountryCode) && (currentName.toUpperCase() == stateArray[i].StateName.toUpperCase())) {
							this.model.state = stateArray[i].StateCode;
							// recursively check the state
							this.onStateChanged();
							return;
						}
					}
				};

				instance.isStateValidFull = function () {

					return this.isStateValid && !this.isStateEmpty;
				};

				instance.onCityChanged = function () {
					var currentName = this.model.city || '';

					this.isCityEmpty = currentName === '';
					this.isCityValid = this.isCityEmpty || currentName.match(nc_Val_CityRegex);
				};

				instance.isCityValidFull = function () {

					return this.isCityValid && !this.isCityEmpty;
				};

				instance.onZipChanged = function () {
					var currentName = this.model.zipCode || '';

					this.isZipEmpty = currentName === '';
					var countryCode = this.model.country.toUpperCase();
					var regexToCheck = nc_Val_AlphaNumericSpace;
					this.zipValidationMessage = AddressValidationRes.error_Site_PostalCodeErrorMessage;

					switch (countryCode.toUpperCase()) {
						case "US":
							regexToCheck = nc_Val_US_PostalCodeRegex;
							this.zipValidationMessage = AddressValidationRes.error_Site_PostalUSErrorMessage;
							break;
						case "CA":
							regexToCheck = nc_Val_CA_PostalCodeRegex;
							this.zipValidationMessage = AddressValidationRes.error_Site_PostalCAErrorMessage;
							break;
						case "GB":
							regexToCheck = nc_Val_GB_PostalCodeRegex;
							this.zipValidationMessage = AddressValidationRes.error_Site_PostalGBErrorMessage;
							break;
						case "NL":
							regexToCheck = nc_Val_NL_PostalCodeRegex;
							this.zipValidationMessage = AddressValidationRes.error_Site_PostalNLErrorMessage;
							break;
						case "BR":
							regexToCheck = nc_Val_BR_PostalCodeRegex;
							this.zipValidationMessage = AddressValidationRes.error_Site_PostalBRErrorMessage;
							break;
						case "JP":
							regexToCheck = nc_Val_JP_PostalCodeRegex;
							this.zipValidationMessage = AddressValidationRes.error_Site_PostalJPErrorMessage;
							break;
						case "JE":
							regexToCheck = nc_Val_JE_PostalCodeRegex;
							this.zipValidationMessage = AddressValidationRes.error_Site_PostalJEErrorMessage;
							break;
						case "GG":
							regexToCheck = nc_Val_GG_PostalCodeRegex;
							this.zipValidationMessage = AddressValidationRes.error_Site_PostalGGErrorMessage;
							break;
					}


					this.isZipValid = currentName.match(regexToCheck) || this.isZipEmpty;
				};

				instance.isZipValidFull = function () {
					return this.isZipValid && !this.isZipEmpty;
				};

				instance.onPhoneChanged = function () {
					var currentName = this.model.phone || '';
					this.isPhoneValid = currentName.match(nc_Val_FiveOrMoreDigits);
					$scope.addEditContactForm.tel.$setValidity('invalidPhone', currentName.match(nc_Val_FiveOrMoreDigits) != null);
				};

				instance.onFaxChanged = function () {
					var currentName = this.model.fax || '';
					this.isFaxValid = true;
					$scope.addEditContactForm.fax.$setValidity('invalidFax', true);
					if (currentName != "") {
						this.isFaxValid = currentName.match(nc_Val_Numeric);
						$scope.addEditContactForm.fax.$setValidity('invalidFax', currentName.match(nc_Val_FiveOrMoreDigits) != null);
					}
				};

				instance.isFaxValidFull = function () {
					return this.isFaxValid == null ? true : this.isFaxValid;
				};

				instance.isCountryEmpty = function () {
					return this.model.country == '';
				};

				instance.isPhonePrefixEmpty = function () {
					return ( this.model.phonePrefix || "" ) <= '+';
				};

				instance.isFaxPrefixEmptyAndRequired = function () {
					return this.model.faxPrefix <= '+' && this.model.fax > '';
				};

				instance.isPhoneValidFull = function() {
					return this.isPhoneValid && !this.isPhonePrefixEmpty();
				};
				

				instance.onEmailChanged = function () {
				    var currentName = this.model.email || '';

				    var maxLength = 128;
				    this.emailMaxLength = currentName.length > maxLength;
				    $scope.addEditContactForm.email.errorMsg_maxLength = maxLength;

				    this.isEmailEmpty = currentName === '';
				    this.isEmailValid = this.isEmailEmpty || pageHelper.Validation.email(currentName).isValid;
				};

				instance.isEmailValidFull = function () {

				    return this.isEmailValid && !this.isEmailEmpty && !this.emailMaxLength;
				};

				instance.revalidateForm = function () {
					this.onAddressNameChanged();
					this.onFirstNameChanged();
					this.onLastNameChanged();
					this.onCompanyNameChanged();
					this.onJobTitleChanged();
					this.onAddress1Changed();
					this.onAddress2Changed();
					this.onStateChanged();
					this.onCityChanged();
					this.onZipChanged();
					this.onPhoneChanged();
					this.onFaxChanged();
					this.onEmailChanged();
				};

				instance.areAllFieldsValid = function () {

					var ok = this.isEmailValidFull()
						&& this.isFaxValidFull()
						&& this.isPhoneValidFull()
						&& this.isZipValidFull()
						&& this.isCityValidFull()
						&& this.isStateValidFull()
						&& this.isAddress1ValidFull()
						&& this.isAddress2ValidFull()
						&& this.isCompanyNameValidFull()
						&& this.isJobTitleValidFull()
						&& this.isFirstNameValidFull()
						&& this.isLastNameValidFull()
						&& !this.isCountryEmpty()
						&& !this.isPhonePrefixEmpty()
						&& !this.isFaxPrefixEmptyAndRequired()
						&& this.isNameValidFull();

					return ok;
				};

				instance.save = function () {
					instance.asyncStatus(pageHelper.AsyncStatus.Loading);
					this.showErrors = true;
					this.asyncStatus(pageHelper.AsyncStatus.Locked);

					if (this.model.addressName  == "" ) {
						this.model.addressName = this.bulkData.AutoName;
						this.onAddressNameChanged();
					}

					angular.forEach($scope.addEditContactForm.$error.required, function (field) {
						field.$setDirty();
					});
					
					if (angular.isDefined($scope.addEditContactForm.telExt)) {
						$scope.addEditContactForm.telExt.$setDirty();
					}

					$scope.addEditContactForm.fax.$setDirty();
					$scope.addEditContactForm.email.$setDirty();


					if ( (this.model.fax || '') == '') {
						this.model.faxPrefix = '';
					}


					if (!this.areAllFieldsValid()) {
					    var validationError = { Msg: AddressValidationRes.error_validation };
						this.asyncStatus(pageHelper.AsyncStatus.Error, validationError);
						return;
					}
					instance.selfModel = this.model;
					if (this.isAddressNameCanBeChanged) {
						httpRepository.userContacts.addNewCustomContact(this.model).then(function (result) {
							result.sender = "addNew";
							instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
						});
					} else {
						httpRepository.userContacts.editCustomContact(this.model).then(function (result) {
							result.sender = "edit";
							instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
						});
					}
				};

				instance.close = function () {
					$modalInstance.dismiss('cancel');
				};

				$scope.$watch('modalBehavior.model.country', function (newValue, oldValue) {
					if (newValue != oldValue) {
						instance.onZipChanged();
						instance.onStateChanged();
					}
				});
			},

			onSuccess: function (params) {
				var instance = this.instance;
				if (params.sender == 'getModel') {


					instance.bulkData.existingNames = params.Result.ExistingNames;
					instance.bulkData.countries = params.Result.Countries;
					instance.bulkData.phoneCodes = params.Result.PhoneCodes;
					instance.bulkData.states = params.Result.States;

					instance.bulkData.AutoName = params.Result.RequestCountry;
					
					instance.bulkData.isDefaultCompulsory = params.Result.IsDefaultCompulsory;

					var distinctIndex = 0;
					do {
						var unique = true;

						for (var i = 0; i < instance.bulkData.existingNames.length; i++) {
							var existingName = instance.bulkData.existingNames[i].AddressName;
							if (existingName == null) {
								existingName = "";
							}

							if (existingName.toLowerCase() == instance.bulkData.AutoName.toLowerCase()) {
								unique = false;
								distinctIndex++;
								instance.bulkData.AutoName = params.Result.RequestCountry + " " + distinctIndex;
							}
						}
					} while (!unique)

					var oldContact = params.Result.OldContact;

					instance.model.addressName = oldContact.AddressName;
					if (instance.model.addressName == null) {
						instance.model.addressName = "";
					}
					instance.isAddressNameCanBeChanged = instance.model.addressName == "";

					instance.model.isDefault = instance.bulkData.isDefaultCompulsory;

					instance.model.firstName = oldContact.FirstName;
					instance.model.lastName = oldContact.LastName;
					instance.model.companyName = oldContact.Organization;
					instance.model.jobTitle = oldContact.JobTitle;
					instance.model.address1 = oldContact.StreetAddress;
					instance.model.address2 = oldContact.Address2;
					instance.model.state = oldContact.State;
					instance.model.city = oldContact.City;
					instance.model.zipCode = oldContact.Zip;
					instance.model.country = oldContact.Country;
					instance.model.stateProvince = oldContact.StateProvince;
					instance.model.state = oldContact.State;
					instance.model.phoneExtension = oldContact.PhoneExtension;


					// selected contact is "use for" by default

					instance.model.isUseForRegistrant = instance.isRegistrantContact;
					instance.model.isUseForAdministrative = instance.isAdministrativeContact;
					instance.model.isUseForTechnical = instance.isTechnicalContact;
					instance.model.isUseForAuxBilling = instance.isBillingContact;

					var splitted = oldContact.Phone.split(".");
					if (splitted.length > 1) {
						instance.model.phonePrefix = splitted[0];
						instance.model.phone = splitted[1];
					} else {
						instance.model.phone = splitted[0];
					}

					splitted = oldContact.Fax.split(".");
					if (splitted.length > 1) {
						instance.model.faxPrefix = splitted[0];
						instance.model.fax = splitted[1];
					} else {
						instance.model.faxPrefix = '';
						instance.model.fax = splitted[0];
					}

					instance.model.email = oldContact.Email;
					instance.model.phoneExtension = '';

					$scope.startAutoFocus = true;
				}
				else if (params.sender == 'addNew') {
					$modalInstance.close({ savedEntity: params.Result, modalEntity: instance.selfModel });
				}
				else if (params.sender == 'edit') {
					$modalInstance.close({ savedEntity: params.Result, modalEntity: instance.selfModel });
				}
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
			},
			onActive: function (params) {
				if (this.instance.revalidateForm) {
					this.instance.revalidateForm();
				}
			},

			onLoading: function (params) {
				var instance = this.instance;
			},

			onLocked: function (params) {
				var instance = this.instance;
			},

			onError: function (params) {
				var instance = this.instance;
				if (params.sender == 'addNew' || params.sender == 'edit') {
				    params.Msg = AddressValidationRes.error_fatal;
				}

				instance.activeNotification = $scope.pageNotification.alerts.addError(params.Msg, {
					hasClose: true,
					isAutoHide: false
				});
				instance.showNotifications = true;
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
			}
		});

		$document.bind('keydown', function (evt) {
			if (evt.which === 27 && !$scope.modalBehavior.asyncStatus().isDisabled) {
				$scope.modalBehavior.close();
			}
		});

		$document.bind('click', function (evt) {
			if (angular.element(evt.target).hasClass("mfp-content") && !$scope.modalBehavior.asyncStatus().isDisabled) {
				$scope.modalBehavior.close();
			}
		});
	}
]);
;
app.controller('domainContactsCtrl', [
	'$scope', '$rootScope', 'httpRepository', '$filter', '$modal', '$location', 'notificationService', 'pageHelper', '$timeout', '$sce', '$templateCache', 'httpService', '$anchorScroll',
	function ($scope, $rootScope, httpRepository, $filter, $modal, $location, notificationService, pageHelper, $timeout, $sce, $templateCache, httpService, $anchorScroll) {
		$rootScope.closeLightbox = function() {
			window.location.href = '/Profile/Tools/';
		}
		$scope.skipTld = ['de', 'bio', 'eu'];

		var commonButtonTextRes = CommonButtonTextRes;
		var errorRes = ErrorMessageRes
		$scope.resources = DomainContactsRes;
		$templateCache.get('/Profile/Tools/DomainContacts/ItemContacts/Template/');

		$scope.pageHelper = pageHelper;
		$scope.pageNotification = new notificationService.instance();
		$rootScope.contactType = {
			Registrant: 1,
			Administrative: 2,
			Techinical: 3,
			Billing: 4
		};

		$scope.pageBehavior = new pageHelper.AsyncStateBehavior({
			constructor: function() {
				var instance = this.instance;
				instance.asyncStatus(pageHelper.AsyncStatus.Loading);
				instance.activeNotification = new notificationService.instance();
				instance.isLoading = true;
				instance.showContent = false;
				httpRepository.userContacts.getDomainContactsSettings().then(function(result) {
					result.sender = "getModel";
					instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
				});
				httpRepository.userContacts.getProfile().then(function (result) {
					$rootScope.primaryAddressInfo = result.Result;
				});
				httpRepository.userContacts.getDefault().then(function (result) {
					$rootScope.defaultAddressInfo = result.Result;
				});
				instance.saveChanges = function() {
					instance.asyncStatus(pageHelper.AsyncStatus.Loading);
					var formIsValid = true;
					var saveModel = {};
					var firstInvalideElementName = null;

					if (!instance.model.defaultDomainContacts.contacts.form.$valid) {
						formIsValid = false;
						angular.forEach(instance.model.defaultDomainContacts.contacts.form.$error.required, function (field) {
							if (firstInvalideElementName == null) {
								firstInvalideElementName = field.$name;
							}
							field.$setDirty();
						});
					}
				
					instance.model.tldAlternativeContacts.forEach(function(element) {
						if (element.attributes.IsUsed) {
							if (element.contacts != null && !element.contacts.form.$valid) {
								formIsValid = false;
								angular.forEach(element.contacts.form.$error.required, function (field) {
									if (firstInvalideElementName == null) {
										firstInvalideElementName = field.$name;
									}
									field.$setDirty();
								});
							}
							if (!element.form.$valid) {
								formIsValid = false;
								angular.forEach(element.form.$error.required, function (field) {
									if (firstInvalideElementName == null) {
										firstInvalideElementName = field.$name;
									}
									field.$setDirty();
								});
							}
						}
					});

					if (formIsValid) {

						if (instance.serverData.DefaultDomainContacts.Registrant.ContactInfoType != parseInt(instance.model.defaultDomainContacts.contacts.Registrant.ContactInfoType) ||
								instance.serverData.DefaultDomainContacts.Registrant.CustomAddressId != parseInt(instance.model.defaultDomainContacts.contacts.Registrant.CustomAddressId)
						) {
							saveModel.Registrant = {
								ContactType: instance.model.defaultDomainContacts.contacts.Registrant.ContactInfoType,
								CustomContactAddressId: instance.model.defaultDomainContacts.contacts.Registrant.CustomAddressId
							}
						}
						if (instance.serverData.DefaultDomainContacts.Admin.ContactInfoType != parseInt(instance.model.defaultDomainContacts.contacts.Admin.ContactInfoType) ||
								instance.serverData.DefaultDomainContacts.Admin.CustomAddressId != parseInt(instance.model.defaultDomainContacts.contacts.Admin.CustomAddressId)
						) {
							saveModel.Administrative = {
								ContactType: instance.model.defaultDomainContacts.contacts.Admin.ContactInfoType,
								CustomContactAddressId: instance.model.defaultDomainContacts.contacts.Admin.CustomAddressId
							}
						}
						if (instance.serverData.DefaultDomainContacts.Tech.ContactInfoType != parseInt(instance.model.defaultDomainContacts.contacts.Tech.ContactInfoType) ||
								instance.serverData.DefaultDomainContacts.Tech.CustomAddressId != parseInt(instance.model.defaultDomainContacts.contacts.Tech.CustomAddressId)
						) {
							saveModel.Techinical = {
								ContactType: instance.model.defaultDomainContacts.contacts.Tech.ContactInfoType,
								CustomContactAddressId: instance.model.defaultDomainContacts.contacts.Tech.CustomAddressId
							}
						}
						if (instance.serverData.DefaultDomainContacts.Billing.ContactInfoType != parseInt(instance.model.defaultDomainContacts.contacts.Billing.ContactInfoType) ||
								instance.serverData.DefaultDomainContacts.Billing.CustomAddressId != parseInt(instance.model.defaultDomainContacts.contacts.Billing.CustomAddressId)
						) {
							saveModel.Billing = {
								ContactType: instance.model.defaultDomainContacts.contacts.Billing.ContactInfoType,
								CustomContactAddressId: instance.model.defaultDomainContacts.contacts.Billing.CustomAddressId
							}
						}
						var extendedAttributes = angular.copy(instance.serverData.ExtendedAttributes);

						function findElementName(tldName) {
							for (name in extendedAttributes) {
								if (extendedAttributes[name].TldName != null && extendedAttributes[name].TldName == tldName) {
									return name;
								}
							}
							return null;
						};

						instance.model.tldAlternativeContacts.forEach(function(element) {
							var elementName = findElementName(element.attributes.TldName);
							if (element.prepareSave)
								element.prepareSave();
							extendedAttributes[elementName] = element.attributes;
							if (element.contacts != null) {
								extendedAttributes[elementName + "Contacts"] = element.contacts;
							}

						});
						saveModel.ExtendedAttributes = extendedAttributes;

						httpRepository.userContacts.saveDomainContactsSettings(saveModel).then(function(result) {
							result.sender = "saveDomainContactsSettings";

							if (result.Error == false) {
								// redirect to /Profile/Tools?notificationKey=s_dcp   // s_dcp is the success status
								window.location.href = '/Profile/Tools?notificationKey=s_dcp';
							} else {
								result.Msg = $scope.resources.message_DomainContactsPresetsSave_Error;
								$rootScope.scroolToElement($('[link="pageNotification"]'), 100);
								instance.asyncStatus(pageHelper.AsyncStatus.Error, result);
							}
						});
					}
					else {
						if (firstInvalideElementName != null) {
							$rootScope.scroolToElement($('[name=' + firstInvalideElementName + ']'), 100);
						} 

						instance.asyncStatus(pageHelper.AsyncStatus.Error, { Msg: errorRes.error_ContactsFormIsNotValid, sender: "save" });
					}
				}
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
			},
			onSuccess: function(params) {
				var instance = this.instance;
				if (params.sender == 'getModel') {
					instance.model = {};
					instance.model.defaultDomainContacts = { contacts: params.Result.DefaultDomainContacts };
					instance.model.defaultDomainContacts.contacts.customAddressDropDownPrefixId = 'defaultDomainContacts';
					instance.model.tldAlternativeContacts = [];
					instance.serverData = angular.copy(params.Result);

					for (var key in params.Result.ExtendedAttributes) {
						if (params.Result.ExtendedAttributes[key] != null && params.Result.ExtendedAttributes[key].TldName != null &&
							params.Result.ExtendedAttributes[key].TldName.toLowerCase() == key.toLowerCase()) {
							if ($scope.skipTld.indexOf(params.Result.ExtendedAttributes[key].TldName.toLowerCase()) > -1)
								continue;
							var contact = {};
							contact.firstName = params.Result.ExtendedAttributes.FirstName;
							contact.lastName = params.Result.ExtendedAttributes.LastName;
							contact.userName = params.Result.ExtendedAttributes.UserName;
							contact.attributes = params.Result.ExtendedAttributes[key];
							contact.contacts = params.Result.ExtendedAttributes[key + "Contacts"];
							if (contact.contacts != null) {
								contact.contacts.customAddressDropDownPrefixId = params.Result.ExtendedAttributes[key].TldName.toLowerCase() + 'DomainContacts';
							}
							instance.model.tldAlternativeContacts.push(contact);
						}
					}
					$rootScope.domainContactsParameters = params.Result.DefaultDomainContactsParameters;
					$rootScope.getCountryByCode = function(code) {
						if (code == null) {
							return null;
						}
						for (var index = 0; index < $rootScope.countries.length; index++) {
							if ($rootScope.countries[index].Code == code) {
								return $rootScope.countries[index].Name;
							}
						}
						return null;
					}
					$rootScope.customContacts = params.Result.CustomContacts;
					$rootScope.countries = params.Result.Countries;
					$rootScope.asiaCountries = params.Result.AsiaCountries;
					$timeout(function() {
						instance.isLoading = false;
						instance.showContent = true;
					}, 450);
				}
			},
			onActive: function(params) {
				var instance = this.instance;
			},
			onLoading: function(params) {
				var instance = this.instance;
			},
			onLocked: function(params) {
				var instance = this.instance;
			},
			onError: function(params) {
				var instance = this.instance;
				instance.isLoading = false;
				if (params.sender != 'getModel' && params.sender != 'save' && params.sender != 'saveDomainContactsSettings') {
					instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
						hasClose: true,
						isAutoHide: false
					});
				} else {
					instance.activeNotification = $scope.pageNotification.alerts.addError(params.Msg, {
						hasClose: true,
						isAutoHide: false
					});
				}

			}
		});
	}
]);;
app.controller('asia_AlternativeContactCtrl', ['$scope', '$rootScope', '$timeout', function ($scope, $rootScope, $timeout) {
    $scope.countries = $rootScope.countries;
    $scope.asiaCountries = $rootScope.asiaCountries;

    $scope.asiaEntityType = {
        Corporation: 0,
        Cooperative: 1,
        Partnership: 2,
        Government: 3,
        PoliticalParty: 4,
        Society: 5,
        Institution: 6,
        NaturalPerson: 7,
        Other: 8,
    }

    $scope.asiaIdentityForm = {
        Certificate: 0,
        Legislation: 1,
        Societyregistry: 2,
        Politicalpartyregistry: 3,
        Passport: 4,
        Other: 5,
    }

    $scope.asiaContactType= {
    	CED: 0,
    	CEA: 1,
    }

    $scope.$on("InitExtendedAttributes", function (event, tldItem) {
				
    	if (tldItem.attributes.CcLocality != null) {
    		var selectedCountry = angular.copy(tldItem.attributes.CcLocality.toString());
    		$scope.tldItem.attributes.CcLocality = null;
    		$timeout(function () {
    			$scope.tldItem.attributes.CcLocality = selectedCountry;
    		});
    	}


        $scope.tldItem = tldItem;
        $scope.tldItem.form = $scope['form'];

        $scope.$watch('tldItem.attributes.LegalEntityType', function () {
        	if ($scope.tldItem.form.asia_EntityType)
				$scope.tldItem.form.asia_EntityType.$setValidity('required', tldItem.attributes.LegalEntityType > -1);
        });

        $scope.$watch('tldItem.attributes.ContactType', function() {
        	if ($scope.tldItem.form.asia_ContactType){
		        $scope.tldItem.form.asia_ContactType.$setValidity('required', tldItem.attributes.ContactType > -1);
		        if ($scope.tldItem.form.asia_EntityType) {
			        $timeout(function() {
				        $scope.tldItem.form.asia_EntityType.$setValidity('required', tldItem.attributes.LegalEntityType > -1);
			        });
		        }

		        if ($scope.tldItem.form.asia_IdentityForm) {
			        $timeout(function() {
				        $scope.tldItem.form.asia_IdentityForm.$setValidity('required', tldItem.attributes.IdentForm > -1);
			        });
		        }

	        }
        });

        $scope.$watch('tldItem.attributes.IdentForm', function () {
        	if ($scope.tldItem.form.asia_IdentityForm)
				$scope.tldItem.form.asia_IdentityForm.$setValidity('required', tldItem.attributes.IdentForm > -1);
        });

        tldItem.prepareSave = function () {
        	// cleanup old values
	        if (tldItem.attributes.LegalEntityType != $scope.asiaEntityType.Other)
	        	tldItem.attributes.OtherLegalType = null;

	        if (tldItem.attributes.IdentForm != $scope.asiaIdentityForm.Other)
	        	tldItem.attributes.OtherIdentForm = null;
        }

    });
   
}]);
;
