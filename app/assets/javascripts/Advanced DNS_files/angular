    ncGridModule.factory('ncGridEmitPropertyScopeSearch', [function () {
        function find(currentScope, propertyName) {
            if (currentScope[propertyName] != undefined) {
                return currentScope;
            }
            else if (currentScope.$parent != undefined) {
                return find(currentScope.$parent, propertyName);
            } else {
                return null;
            }
        }
        return function (currentScope, propertyName) {
            return find(currentScope, propertyName);
        }
    }]);

    ncGridModule.factory('ncGridTemplateService', ['$q', '$http', 'ncGridTemplatesProperties', function ($q, $http, ncGridTemplatesProperties) {
        var templatesDefered = null;
        var templates = {};
        var ckeckTemplates = function () {
            if (templatesDefered == null) {
                templatesDefered = $q.defer();
                $http.get(ncGridTemplatesProperties.templatePage).then(function (result) {
                    if (result.status == 200) {
                        var alltamplates = angular.element(result.data);
                        for (var nodeKey in alltamplates) {
                            var tmpNode = alltamplates[nodeKey];
                            if (tmpNode.nodeName == 'SCRIPT') {
                                templates[tmpNode.id] = tmpNode.innerHTML;
                            }
                        }
                        templatesDefered.resolve(templates);
                    }
                    else {
                        templatesDefered.resolve(templates);
                    }
                });
            }
            return templatesDefered.promise;
        }
        return function (tmpKey) {
            var templateDefered = $q.defer();
            ckeckTemplates().then(function (result) {
                if (!result) {
                    templateDefered.resolve(null);
                }
                return templateDefered.resolve(result[tmpKey]);
            });
            return templateDefered.promise;
        }
    }]);

	ncGridModule.directive('ncTbody', ['$compile', function ($compile) {
		return {
			restrict: "A",
			replace: false,
			scope: false,
			link: function (scope, elem) {
				if (elem.attr('infinite-scroll')) {
					return;
				}

				elem.addClass('ng-cloak');
				elem.attr('infinite-scroll', '$settings.mapping.renderMore()');
				elem.attr('infinite-scroll-immediate-check', 'true');
				elem.attr('infinite-scroll-distance', '1');
				elem.attr('infinite-scroll-disabled', '$parameters.mapping.isRenderMoreProcessing');
				elem.attr('data-ng-class', "{'async-processing':$parameters.mapping.isLoading}");
				elem.append("<tr class='async-processing' data-ng-if='$parameters.mapping.isRenderMoreProcessing || !$parameters.mapping.isLoading && !$parameters.mapping.isPageFull'><td style='height:80px'></td></tr>");
			    $compile(elem)(scope);
			}
		};
	}]);

    //#endregion


}));
