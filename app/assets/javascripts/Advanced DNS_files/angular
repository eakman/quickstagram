                    "IA": ["IA", "Iowa"],
                    "KS": ["KS", "Kansas"],
                    "KY": ["KY", "Kentucky"],
                    "LA": ["LA", "Louisiana"],
                    "ME": ["ME", "Maine"],
                    "MD": ["MD", "Maryland"],
                    "MA": ["MA", "Massachetts"],
                    "MI": ["MI", "Michigan"],
                    "MN": ["MN", "Minnesota"],
                    "MS": ["MS", "Mississippi"],
                    "MO": ["MO", "Missouri"],
                    "MT": ["MT", "Montana"],
                    "NE": ["NE", "Nebraska"],
                    "NV": ["NV", "Nevada"],
                    "NH": ["NH", "New Hampshire"],
                    "NJ": ["NJ", "New Jersey"],
                    "NM": ["NM", "New Mexico"],
                    "NY": ["NY", "New York"],
                    "NC": ["NC", "North Carolina"],
                    "ND": ["ND", "North Dakota"],
                    "OH": ["OH", "Ohio"],
                    "OK": ["OK", "Oklahoma"],
                    "OR": ["OR", "Oregon"],
                    "PA": ["PA", "Pennsylvania"],
                    "RI": ["RI", "Rhode Island"],
                    "SC": ["SC", "South Carolina"],
                    "SD": ["SD", "South Dakota"],
                    "TN": ["TN", "Tennessee"],
                    "TX": ["TX", "Texas"],
                    "UT": ["UT", "Utah"],
                    "VT": ["VT", "Vermont"],
                    "VA": ["VA", "Virginia"],
                    "WA": ["WA", "Washington"],
                    "WV": ["WV", "West Virginia"],
                    "WI": ["WI", "Wisconsin"],
                    "WY": ["WY", "Wyoming"],
                    "DC": ["DC", "Washington, D.C", "Washington D.C", "Washington DC", "Washington, DC"],
                    "AS": ["AS", "American Samoa"],
                    "UM": ["UM", "Minor Outlying Islands"],
                    "MP": ["MP", "Northern Mariana Islands"],
                    "PR": ["PR", "Puerto Rico"],
                    "VI": ["VI", "Virgin Islands"],
                    "GU": ["GU", "Guam"],
                    "FM": ["FM", "Federated States of Micronesia"],
                    "MH": ["MH", "Marshall Islands"],
                    "PW": ["PW", "Palau"],
                    "AE": ["AE", "Armed Forces Europe"],
                    "AP": ["AP", "Armed Forces Pacific"],
                    "AA": ["AA", "Armed Forces Americas"]


                }
            },
            "CA": {
                // http://www.geopostcodes.com/Canada
                "states": {
                    "AB": ["AB", "Alberta"],
                    "BC": ["BC", "British Columbia"],
                    "MB": ["MB", "Manitoba"],
                    "NB": ["NB", "New Brunswick"],
                    "NL": ["NL", "Newfoundland & Labrador"],
                    "NS": ["NS", "Nova Scotia"],
                    "ON": ["ON", "Ontario"],
                    "PE": ["PE", "Prince Edward Island"],
                    "QC": ["QC", "Quebec"],
                    "SK": ["SK", "Saskatchewan"],
                    "NT": ["NT", "Northwest Territories"],
                    "NU": ["NU", "Nunavut"],
                    "YT": ["YT", "Yukon"]
                }
            }
        };

        var selectedCountry = selectedCountry;
        var _country = countries[selectedCountry]
        if (_country != null) {
            validateState = true;
            var states = _country.states
            var currentState = "";
            var state = states[statevalue];
            for (var s in states) {
                for (var t in states[s]) {
                    if (t != "sortOn") {
                        currentState = states[s][t].replace(/[^a-zA-Z0-9]/g, '').toLowerCase()
                        if (statevalue.toLowerCase() === currentState) {
                            modelCtrl.$setValidity('invalidstate', true)
                            modelCtrl.$setViewValue(s);
                            modelCtrl.$render();
                            return s;
                        }

                    }


                }
            }
            modelCtrl.$setValidity('invalidstate', false)
            modelCtrl.$setViewValue(statevalue);
            modelCtrl.$render();
            return statevalue;

        }
        else {
            modelCtrl.$setValidity('invalidstate', true)
            //modelCtrl.$setViewValue(inputvalue);
            //modelCtrl.$render();
            return statevalue;
        }
    }
    $scope.$watch('SSLInfoSectionViewModel.CSRCode', function (newVal, oldVal) {

        if (newVal != oldVal && newVal != '' && newVal != undefined) {
            var countBeginNewCertificate = (newVal.match(/-----BEGIN NEW CERTIFICATE REQUEST-----/g) || []).length;
            var countBeginCertificate = (newVal.match(/-----BEGIN CERTIFICATE REQUEST-----/g) || []).length;
            //TO HIDE CONTEXTUAL MESSAGES 
            $scope.sslactivate.CSRCode.$setValidity('CSRInvalid', true);
            $scope.sslactivate.CSRCode.$setValidity('noDomainName', true);
            $scope.sslactivate.CSRCode.$setValidity('enterwildcard', true);
            $scope.sslactivate.CSRCode.$setValidity('enternonwildcard', true);
            $scope.sslactivate.CSRCode.$setValidity('multidomainnotallowed', true);
            $scope.sslactivate.CSRCode.$setValidity('activateMoreDomain', true);
            //$scope.sslactivate.CSRCode.$setValidity('activationCertificateExpired', true);
            $scope.sslactivate.CSRCode.$setValidity('invalidDomainRenewal', true);
            $scope.sslactivate.CSRCode.$setValidity('samePrimaryDomainForRenewal', true);
            $scope.sslactivate.CSRCode.$setValidity('internalDomainNameNotAllowed', true);
            $scope.sslactivate.CSRCode.$setValidity('sansParametersDoNotMatchWithCommonName', true);
            $scope.sslactivate.CSRCode.$setValidity('positiveSSLCantBeRenewals', true);
            $scope.sslactivate.CSRCode.$setValidity('specialPromotionsCantBeRenewals', true);
            $scope.sslactivate.CSRCode.$setValidity('commonNameInCSRIsBlocked', true);
            $scope.sslactivate.CSRCode.$setValidity('errorDomain', true);

            if (countBeginCertificate > 1 || countBeginNewCertificate > 1)
                //WHEN MORE THAN ONE CSR IS PROVIDED ADD A ERROR TO THE CONTROL WITH THE ALIAS multiplecsrprovided
                $scope.sslactivate.CSRCode.$setValidity('multiplecsrprovided', false);
            else
                $scope.sslactivate.CSRCode.$setValidity('multiplecsrprovided', true);
        }
        else {
            $scope.sslactivate.CSRCode.$setValidity('multiplecsrprovided', true);
        }

    }, true);


    // CHECK DUPLICATE VALUES IN COMMON NAMES DETECTED.EACH COMMON NAME SHOULD HAVE A UNIQUE VALUE 
    $scope.CheckDuplicateCommonNames = function () {
        if ($scope.SSLInfoSectionViewModel.PrimaryDomainDetail.CommonName != "") {
            var commonNames = [];

            commonNames.push($scope.SSLInfoSectionViewModel.PrimaryDomainDetail.CommonName.toUpperCase());
            for (index = 0; index < $scope.addonDomains.length; index++) {
                $scope.addOnErrorLength = $scope.addonDomains.length - 1;
                if ($scope.addonDomains[index].CommonName != "" && $scope.addonDomains[index].CommonName != undefined) {
                    var commonName = $scope.addonDomains[index].CommonName.toUpperCase();
                    if ($scope.sslactivate.addondomainField != undefined) {
                        if (commonNames.indexOf(commonName.toUpperCase()) === -1) {
                            if ($scope.SSLInfoSectionViewModel.PrimaryDomainDetail.CommonName != $scope.addonDomains[index].CommonName) {

                                commonNames.push(commonName)
                            }
                            $scope.sslactivate.addondomainField.$setValidity('duplicateAddonDomain', true);
                            // $scope.sslactivate.addondomainField.$setValidity('invalidSan', true);
                            //  $scope.sslactivate.addondomainField.$setValidity('Saninvalidforquicksslpremium', true);

                        }
                        else {

                            $scope.sslactivate.addondomainField.$setValidity('invalidSan', true);
                            $scope.sslactivate.addondomainField.$setValidity('invalidSubDomain', true);
                            $scope.sslactivate.addondomainField.$setValidity('duplicateAddonDomain', false);
                            $scope.addOnErrorLength = index;
                            break;
                        }
                    }

                }


            }
        }

    }

    $scope.AsynchronousWizardConfirmation = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.Click = function () { 
                $scope.isConfirmClicked = true;
                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                sslRepository.sslInfo.ActivateCertificate($scope.SSLInfoSectionViewModel).then(function (result) {
                   instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
            });


            }
        },
        onSuccess: function (params) {
            sslRepository.sslInfo.RedirectProductPageJSON($scope.SSLInfoSectionViewModel.CertificateId).then(function (result) { 
                if (!result.Error) {
                    var redirectURL = result.Msg;
                    window.location = redirectURL;
                    // $.get(redirectURL, { }, function () { });
                }
                else {
                    $scope.sslnotification.alerts.clear();
                    $scope.sslnotification.alerts.addError(result.Msg, $scope.sslnotificationAlertArguments)
                    $('html, body').animate({ scrollTop: 0 }, 800);
                    return false;
                }
            });

        },
        onLoading: function (params) {
            var instance = this.instance;
            $scope.sslnotification.alerts.clear();
            instance.activeNotification = $scope.sslnotification.stuckNotifications.addLoading('<B>Submitting Confirmation</B> Please wait.', false);
            instance.isDisabled = true;
            instance.showError = false;
        },
        onError: function (params) {
            $scope.sslnotification.alerts.clear();
            //alert(params.Msg)
            var a = params.Msg;
            var b = '-3000', errorMessage = 'foreignOrderNumber';
            if (a.indexOf(b) > -1) {
                $scope.sslnotification.alerts.addError($scope.SSLInfoRes.static_ErrorChildReissue, $scope.sslnotificationAlertArguments)
            }
            if (a.indexOf(errorMessage) > -1) {
                $scope.sslnotification.alerts.addError($scope.SSLInfoRes.static_foreignOrderNumberError, $scope.sslnotificationAlertArguments)
            }
            else {
                $scope.sslnotification.alerts.addError(params.Msg, $scope.sslnotificationAlertArguments)

            }
            $('html, body').animate({ scrollTop: 0 }, 800);
        }
    })



    // BUTTON NEXT CLICK EVENT
    $scope.ClickNext = function () {
        $scope.ReplaceCommonNameIfModified();
        $scope.NextButtonClicked = true;
        if ($scope.wizardstep == 1) {
            $scope.sslnotification.alerts.clear();
            $scope.CheckIsMinimumAddonDomainEntered();
            $scope.CheckDuplicateCommonNames();
            if ($scope.WebServer == $scope.SSLInfoRes.static_SelectOption) {
                $scope.sslactivate.ddlWebServer.$setValidity('webserverRequired', false)
            }
            else {
                $scope.sslactivate.ddlWebServer.$setValidity('webserverRequired', true)
            }
            for (addonIndex = 0; addonIndex < $scope.addonDomains.length; addonIndex++) {
                $scope.AddonDomainValidation($scope.addonDomains[addonIndex].CommonName, addonIndex)
            }
            if (($scope.SSLInfoSectionViewModel.Status == 'NEWPURCHASE' || $scope.SSLInfoSectionViewModel.Status == 'NEWRENEWAL') && $scope.SSLInfoSectionViewModel.SanCount > 0 && $scope.addonDomains.length == 0) {
                $scope.sslactivate.$invalid = true;
            }
            if ($scope.SSLInfoSectionViewModel.Status == 'ACTIVE' && $scope.ErrorOccuredInReissue) {
                $scope.sslactivate.$invalid = true;
            }
            if ($scope.sslactivate.$invalid) {
                $scope.sslnotification.alerts.addError($scope.ErrorMsgRes.error_Site_SummaryMessage, $scope.sslnotificationAlertArguments)
                $('html, body').animate({ scrollTop: 0 }, 800);

            }
            else {
                if ($scope.SSLInfoSectionViewModel.Status == 'ACTIVE' && $scope.SSLInfoSectionViewModel.ProviderName == 'COMODO') {
                    if ($scope.SSLInfoSectionViewModel.PrimaryDomainDetail.CommonName != $scope.oldPrimaryDomain.CommonName) {
                        $scope.ReissueModel();
                    }
                    else {
                        $scope.ValidateCsr.click();
                    }
                }
                else
                {
                    $scope.ValidateCsr.click();
                }
            }

        }
        else if ($scope.wizardstep == 2) {
            if ($scope.SSLInfoSectionViewModel.IsDCVStepRequired && (($scope.SSLInfoSectionViewModel.Status == 'NEWPURCHASE' || $scope.SSLInfoSectionViewModel.Status == 'NEWRENEWAL') || ($scope.SSLInfoSectionViewModel.Status == 'ACTIVE'))) {
                $scope.ApproverEmailListErrorCount = 0;
                $scope.GetApproverListReqFrom = "PAGELOAD";
                if ($scope.GetDcvMethodName($scope.SSLInfoSectionViewModel.PrimaryDomainDetail.ValidationType) == 'Email') {

                    $scope.GetApproverEmailList.click();
                }

                for (var i = 0; i < $scope.addonDomains.length; i++) {
                    if ($scope.addonDomains[i].ValidationType.toUpperCase() == 'EMAIL' && $scope.addonDomains[i].CommonName != "") {

                        $scope.GetApproverEmailListForAddOns.click($scope.addonDomains[i].CommonName, i);
                    }

                }
                if ($scope.ApproverEmailListErrorCount == 0 && $scope.SSLInfoSectionViewModel.Status == 'ACTIVE') {
                    $scope.NextButtonClicked = false;
                    $scope.wizardstep = 3;
                }

            }

            else {
                $scope.NextButtonClicked = false;
                $scope.wizardstep = 3;
            }


        }
        else if ($scope.wizardstep == 3 && $scope.SSLInfoSectionViewModel.IsDCVStepRequired) {
            var approveEmailNotSelected = false;
            var dcvMethodNotSelected = false;
            // check addon domain count + 1 for domain count with the list of domain names added to email, dns , http method
            for (var i = 0; i < $scope.domainstovalidateviaemail.length; i++) {
                if (($scope.domainstovalidateviaemail[i].EMAILADDRESS == undefined || $scope.domainstovalidateviaemail[i].EMAILADDRESS == "" || $scope.domainstovalidateviaemail[i].EMAILADDRESS == NaN || $scope.domainstovalidateviaemail[i].EMAILADDRESS == $scope.SSLInfoRes.static_SelectOption) && ($scope.SSLInfoSectionViewModel.Status == 'NEWPURCHASE' || $scope.SSLInfoSectionViewModel.Status == 'NEWRENEWAL')) {
                    $scope.sslnotification.alerts.clear();
                    var errMsg = $scope.SSLInfoValidation.error_Contextual_ApproverEmailRequired.replace("{COMMONNAME}", $scope.domainstovalidateviaemail[i].NAME);
                    $scope.sslnotification.alerts.addError(errMsg, $scope.sslnotificationAlertArguments)
                    approveEmailNotSelected = true;
                    break;
                }
                else if ($scope.SSLInfoSectionViewModel.Status == 'ACTIVE') {
                    if (($scope.domainstovalidateviaemail[i].EMAILADDRESS == undefined || $scope.domainstovalidateviaemail[i].EMAILADDRESS == "" || $scope.domainstovalidateviaemail[i].EMAILADDRESS == NaN || $scope.domainstovalidateviaemail[i].EMAILADDRESS == $scope.SSLInfoRes.static_SelectOption)) {
                        $scope.sslnotification.alerts.clear();
                        var errMsg = $scope.SSLInfoValidation.error_Contextual_ApproverEmailRequired.replace("{COMMONNAME}", $scope.domainstovalidateviaemail[i].NAME);
                        $scope.sslnotification.alerts.addError(errMsg, $scope.sslnotificationAlertArguments)
                        approveEmailNotSelected = true;
                        break;
                    }
                }

            }
            if ($scope.SSLInfoSectionViewModel.ProviderName != 'COMODO' && ($scope.SSLInfoSectionViewModel.Status == 'NEWPURCHASE' || $scope.SSLInfoSectionViewModel.Status == 'NEWRENEWAL')) {
                for (var i = 0; i < $scope.domainstovalidateviadns.length; i++) {
                    if ($scope.domainstovalidateviadns[i].EMAILADDRESS == undefined || $scope.domainstovalidateviadns[i].EMAILADDRESS == "" || $scope.domainstovalidateviadns[i].EMAILADDRESS == NaN || $scope.domainstovalidateviadns[i].EMAILADDRESS == $scope.SSLInfoRes.static_SelectOption) {
                        $scope.sslnotification.alerts.clear();
                        var errMsg = $scope.SSLInfoValidation.error_Contextual_ApproverEmailRequired.replace("{COMMONNAME}", $scope.domainstovalidateviadns[i].NAME);
                        $scope.sslnotification.alerts.addError(errMsg, $scope.sslnotificationAlertArguments)
                        approveEmailNotSelected = true;
                        break;
                    }
                }
                for (var i = 0; i < $scope.domainstovalidateviahttp.length; i++) {
                    if ($scope.domainstovalidateviahttp[i].EMAILADDRESS == undefined || $scope.domainstovalidateviahttp[i].EMAILADDRESS == "" || $scope.domainstovalidateviahttp[i].EMAILADDRESS == NaN || $scope.domainstovalidateviahttp[i].EMAILADDRESS == $scope.SSLInfoRes.static_SelectOption) {
                        $scope.sslnotification.alerts.clear();
                        var errMsg = $scope.SSLInfoValidation.error_Contextual_ApproverEmailRequired.replace("{COMMONNAME}", $scope.domainstovalidateviahttp[i].NAME);
                        $scope.sslnotification.alerts.addError(errMsg, $scope.sslnotificationAlertArguments)
                        approveEmailNotSelected = true;
                        break;
                    }
                }
            }
            var emailDCVLength = 0; $scope.domainstovalidateviaemail.length;
            var dnsDCVLength = 0;
            var httpDCVLength = 0;

            for (var emailIndexCount = 0; emailIndexCount < $scope.domainstovalidateviaemail.length; emailIndexCount++) {
                if ($scope.domainstovalidateviaemail[emailIndexCount].NAME != '') {
                    emailDCVLength += 1;
                }
            }
            for (var dnsIndexCount = 0; dnsIndexCount < $scope.domainstovalidateviadns.length; dnsIndexCount++) {
                if ($scope.domainstovalidateviadns[dnsIndexCount].NAME != '') {
                    dnsDCVLength += 1;
                }
            }
            for (var httpIndexCount = 0; httpIndexCount < $scope.domainstovalidateviahttp.length; httpIndexCount++) {
                if ($scope.domainstovalidateviahttp[httpIndexCount].NAME != '') {
                    httpDCVLength += 1;
                }
            }
            //$scope.addonDomainCount + 1 for sans and +1 for primary domain
            if ($scope.SSLInfoSectionViewModel.ProviderName == 'COMODO') {
                if ($scope.addonDomainCount + 1 != (emailDCVLength + dnsDCVLength + httpDCVLength)) {
                    $scope.sslnotification.alerts.clear();
                    $scope.sslnotification.alerts.addError($scope.SSLInfoValidation.error_Contextual_DCVMethodRequired, $scope.sslnotificationAlertArguments)
                    dcvMethodNotSelected = true;

                }
            }
            else {
                if ((emailDCVLength + dnsDCVLength + httpDCVLength) == 0) {
                    $scope.sslnotification.alerts.clear();
                    $scope.sslnotification.alerts.addError($scope.SSLInfoValidation.error_Contextual_PrimaryDomainDCVMethodRequired, $scope.sslnotificationAlertArguments)
                    dcvMethodNotSelected = true;
                }
            }
            if (dcvMethodNotSelected || approveEmailNotSelected) {
                $('html, body').animate({ scrollTop: 0 }, 800);
            }
            else {


                $scope.NextButtonClicked = false;
                $scope.ClearSummaryMsgAndScrollTop();
                $scope.wizardstep = 4;
            }


            $scope.ClearUnselectedDropdownValidationMsgs();

        }
            /*
            when $scope.SSLInfoSectionViewModel.IsDCVStepRequired =true and $scope.wizardstep == 4 then the step is in Contact 
            or when $scope.SSLInfoSectionViewModel.IsDCVStepRequired =false  and $scope.wizardstep == 3 then the step is in Contact 
            */

        else if (($scope.wizardstep == 4 && $scope.SSLInfoSectionViewModel.IsDCVStepRequired) || (!$scope.SSLInfoSectionViewModel.IsDCVStepRequired && $scope.wizardstep == 3)) {
            $scope.NextButtonClicked = true;
            $scope.sslnotification.alerts.clear();

            //VALIDATE PHONE PREFIX ON BUTTON SUBMIT FOR COMPANY,ADMIN,TECH  CONTACTS
            if (($scope.SSLInfoSectionViewModel.Status.toUpperCase() != "ACTIVE") || ($scope.SSLInfoSectionViewModel.Status.toUpperCase() == "ACTIVE" && $scope.SSLInfoSectionViewModel.ProviderName == 'COMODO')) {


                if ($scope.frmCompanyContacts != undefined && $scope.frmCompanyContacts.addressListCountryOfIncorporation != undefined) {
                    if ($scope.AddressList.CountryofIncorporation == "" && $scope.SSLInfoSectionViewModel.Status == 'ACTIVE' || ($scope.AddressList.CountryofIncorporation == "" && $scope.SSLInfoSectionViewModel.ProviderName == 'COMODO' && $scope.GetValidationType($scope.SSLInfoSectionViewModel.ValidationType) == 'Extended')) {
                        $scope.frmCompanyContacts.addressListCountryOfIncorporation.$setValidity('countryOfIncorpRequired', false);
                    }
                    else {
                        if ($scope.frmCompanyContacts.addressListCountryOfIncorporation != undefined) {
                            $scope.frmCompanyContacts.addressListCountryOfIncorporation.$setValidity('countryOfIncorpRequired', true);

                            if ($scope.AddressList.StateprovinceofIncorporation != '' && $scope.frmCompanyContacts.StateprovinceofIncorporation != undefined) {
                                $scope.AddressList.StateprovinceofIncorporation = $scope.GetStateCode($scope.frmCompanyContacts.StateprovinceofIncorporation, $scope.AddressList.CountryofIncorporation, $scope.AddressList.StateprovinceofIncorporation);
                            }


                        }

                    }

                }

                if ($scope.frmCompanyContacts != undefined) {

                    if ($scope.AddressList.Country == '' || $scope.AddressList.Country == '--' || $scope.AddressList.Country == undefined || $scope.AddressList.Country == NaN)
                        $scope.frmCompanyContacts.addressListCountry.$setValidity('countryRequired', false);
                    else
                        $scope.frmCompanyContacts.addressListCountry.$setValidity('countryRequired', true);
                }
                if ($scope.SSLInfoSectionViewModel.ProviderName.toUpperCase() == 'GEOTRUST' && ($scope.GetValidationType($scope.SSLInfoSectionViewModel.ValidationType) == 'Domain')) {
                    $scope.frmCompanyContacts.addressListCountry.$setValidity('countryRequired', true);
                }
                if ($scope.frmCallBackContact != undefined) {
                    if ($scope.CallBackContacts.CallBackMethod == '')
                        $scope.frmCallBackContact.ddlCallBackMethod.$setValidity('invalidCallBackMethod', false)
                    else
                        $scope.frmCallBackContact.ddlCallBackMethod.$setValidity('invalidCallBackMethod', true)
                }
                if ($scope.frmCompanyContacts != undefined && $scope.frmCompanyContacts.PhoneCode != undefined) {
                    if ($scope.AddressList.PhoneCode == '' && $scope.AddressList.PhoneNumber != '')
                        $scope.frmCompanyContacts.PhoneCode.$setValidity('companyPhoneCodeRequired', false);
                    else
                        $scope.frmCompanyContacts.PhoneCode.$setValidity('companyPhoneCodeRequired', true);
                }
                if ($scope.frmAdminContacts != undefined && $scope.frmAdminContacts.PhoneCode != undefined) {
                    if ($scope.AdminContacts.PhoneCode == "" && $scope.AdminContacts.PhoneNumber != '')
                        $scope.frmAdminContacts.PhoneCode.$setValidity('adminPhoneCodeRequired', false);
                    else
                        $scope.frmAdminContacts.PhoneCode.$setValidity('adminPhoneCodeRequired', true);
                }
                if ($scope.frmTechContacts != undefined && $scope.frmTechContacts.PhoneCode != undefined) {
                    if ($scope.TechContacts.PhoneCode == "" && $scope.TechContacts.PhoneNumber != '')
                        $scope.frmTechContacts.PhoneCode.$setValidity('techPhoneCodeRequired', false);
                    else
                        $scope.frmTechContacts.PhoneCode.$setValidity('techPhoneCodeRequired', true);
                }


                if ($scope.frmCallBackContact != undefined && $scope.frmCallBackContact.CallBackPhoneCode != undefined) {
                    if ($scope.CallBackContacts.PhoneCode == "" && $scope.CallBackContacts.Phone != '') {
                        $scope.frmCallBackContact.CallBackPhoneCode.$setValidity('callbackPhoneCodeRequired', false);
                    }
                    else {
                        $scope.frmCallBackContact.CallBackPhoneCode.$setValidity('callbackPhoneCodeRequired', true);
                    }
                }
                if ($scope.frmCallBackContact != undefined && $scope.frmCallBackContact.CallBackFaxCode != undefined) {
                    if ($scope.CallBackContacts.FaxCode == "" && $scope.CallBackContacts.Fax != '') {
                        $scope.frmCallBackContact.CallBackFaxCode.$setValidity('callbackFaxCodeRequired', false);
                    }
                    else {
                        $scope.frmCallBackContact.CallBackFaxCode.$setValidity('callbackFaxCodeRequired', true);
                    }
                }
                if ($scope.frmCompanyContacts != undefined && $scope.frmCompanyContacts.FaxNumber != undefined) {
                    if ($scope.AddressList.FaxNumber != '' && $scope.AddressList.FaxCode == '')
                        $scope.frmCompanyContacts.FaxCode.$setValidity('companyFaxCodeRequired', false);
                    else
                        $scope.frmCompanyContacts.FaxCode.$setValidity('companyFaxCodeRequired', true);
                }


                if ($scope.frmAdminContacts != undefined && $scope.frmAdminContacts.FaxNumber != undefined) {
                    if ($scope.AdminContacts.FaxNumber != '' && $scope.AdminContacts.FaxCode == '')
                        $scope.frmAdminContacts.FaxCode.$setValidity('adminFaxCodeRequired', false);
                    else
                        $scope.frmAdminContacts.FaxCode.$setValidity('adminFaxCodeRequired', true);
                }

                if ($scope.frmTechContacts != undefined && $scope.frmTechContacts.FaxNumber != undefined) {
                    if ($scope.TechContacts.FaxNumber != '' && $scope.TechContacts.FaxCode == '')
                        $scope.frmTechContacts.FaxCode.$setValidity('techFaxCodeRequired', false);
                    else
                        $scope.frmTechContacts.FaxCode.$setValidity('techFaxCodeRequired', true);
                }
            }

            //VALIDATE PHONE PREFIX ON BUTTON SUBMIT FOR COMPANY,ADMIN,TECH CONTACTS

            if (($scope.frmCompanyContacts!=undefined && $scope.frmCompanyContacts.$invalid) || ($scope.frmCallBackContact != undefined && $scope.frmCallBackContact.$invalid) || $scope.frmAdminContacts.$invalid || ($scope.frmTechContacts != undefined && $scope.frmTechContacts.$invalid)) {
                $scope.sslnotification.alerts.addError($scope.ErrorMsgRes.error_Site_SummaryMessage, $scope.sslnotificationAlertArguments)
                $('html, body').animate({ scrollTop: 0 }, 800);
            }
            else {
                // BELOW VARIABLE TO DISPLAY THE PRIMARY DOMAIN + ADD ON DOMAINS IN CONFORMATION PAGE FOR 3-STEPS ACTIVATION
                if ($scope.SSLInfoSectionViewModel.IsDCVStepRequired) {

                    for (var i = 0; i < $scope.domainstovalidateviaemail.length; i++) {
                        if ($scope.domainstovalidateviaemail[i].NAME == "" || $scope.domainstovalidateviaemail[i].NAME == undefined) {
                            $scope.domainstovalidateviaemail.splice(i, 1);
                            i -= 1;
                        }
                    }
                    for (var i = 0; i < $scope.domainstovalidateviahttp.length; i++) {
                        if ($scope.domainstovalidateviahttp[i].NAME == "" || $scope.domainstovalidateviahttp[i].NAME == undefined) {
                            $scope.domainstovalidateviahttp.splice(i, 1);
                            i -= 1;
                        }
                    }
                    for (var i = 0; i < $scope.domainstovalidateviadns.length; i++) {
                        if ($scope.domainstovalidateviadns[i].NAME == "" || $scope.domainstovalidateviadns[i].NAME == undefined) {
                            $scope.domainstovalidateviadns.splice(i, 1);
                            i -= 1;
                        }
                    }

                    $scope.domainstovalidateviahttp = $filter('orderBy')($scope.domainstovalidateviahttp, ['DOMAINTYPE', 'SanOrder'])
                    $scope.domainstovalidateviaemail = $filter('orderBy')($scope.domainstovalidateviaemail, ['DOMAINTYPE', 'SanOrder'])
                    $scope.domainstovalidateviadns = $filter('orderBy')($scope.domainstovalidateviadns, ['DOMAINTYPE', 'SanOrder'])

                    //bala
                    $scope.displayemailflag = '';
                    $scope.domainstovalidateviaemaildisplayonly = [];
                    $scope.domainstovalidateviahttpdisplayonly = [];
                    $scope.domainstovalidateviadnsdisplayonly = [];
                    $scope.domainstovalidateviahttpdisplayonly = $scope.domainstovalidateviahttp.concat();
                    if ($scope.domainstovalidateviahttp.length != 0 && $scope.SSLInfoSectionViewModel.ProviderName != 'COMODO') {

                        for (var i = 0; i < $scope.addonDomains.length; i++) {
                            if ($scope.addonDomains[i].CommonName != null && $scope.addonDomains[i].CommonName != '' && $scope.addonDomains[i].CommonName != undefined) {
                                domainItemsHttp = [];
                                domainItemsHttp.NAME = $scope.addonDomains[i].CommonName;
                                domainItemsHttp.DOMAINTYPE = "SECONDARY";
                                domainItemsHttp.DCV = "File";
                                domainItemsHttp.SanOrder = i;
                                domainItemsHttp.EMAILADDRESS = "";
                                $scope.domainstovalidateviahttpdisplayonly.push(domainItemsHttp);
                            }
                        }
                        $scope.displayemailflag = '1';
                    }

                    $scope.domainstovalidateviaemaildisplayonly = $scope.domainstovalidateviaemail.concat();
                    if ($scope.domainstovalidateviaemail.length != 0 && $scope.SSLInfoSectionViewModel.ProviderName != 'COMODO') {

                        for (var i = 0; i < $scope.addonDomains.length; i++) {
                            if ($scope.addonDomains[i].CommonName != null && $scope.addonDomains[i].CommonName != '' && $scope.addonDomains[i].CommonName != undefined) {
                                domainItemsEmail = [];
                                domainItemsEmail.NAME = $scope.addonDomains[i].CommonName;
                                domainItemsEmail.DOMAINTYPE = "SECONDARY";
                                domainItemsEmail.DCV = "Email";
                                domainItemsEmail.SanOrder = i;
                                domainItemsEmail.EMAILADDRESS = "";

                                $scope.domainstovalidateviaemaildisplayonly.push(domainItemsEmail);
                            }
                        }
                        $scope.displayemailflag = '1';
                    }

                    $scope.domainstovalidateviadnsdisplayonly = $scope.domainstovalidateviadns.concat();
                    if ($scope.domainstovalidateviadns.length != 0 && $scope.SSLInfoSectionViewModel.ProviderName != 'COMODO') {

                        for (var i = 0; i < $scope.addonDomains.length; i++) {
                            if ($scope.addonDomains[i].CommonName != null && $scope.addonDomains[i].CommonName != '' && $scope.addonDomains[i].CommonName != undefined) {
                                domainItemsDns = [];
                                domainItemsDns.NAME = $scope.addonDomains[i].CommonName;
                                domainItemsDns.DOMAINTYPE = "SECONDARY";
                                domainItemsDns.DCV = "Dns";
                                domainItemsDns.SanOrder = i;
                                domainItemsDns.EMAILADDRESS = "";

                                $scope.domainstovalidateviadnsdisplayonly.push(domainItemsDns);
                            }
                        }
                        $scope.displayemailflag = '1';
                    }
                    $scope.domainstovalidateviahttpdisplayonly = $filter('orderBy')($scope.domainstovalidateviahttpdisplayonly, ['DOMAINTYPE', 'SanOrder'])
                    $scope.domainstovalidateviaemaildisplayonly = $filter('orderBy')($scope.domainstovalidateviaemaildisplayonly, ['DOMAINTYPE', 'SanOrder'])
                    $scope.domainstovalidateviadnsdisplayonly = $filter('orderBy')($scope.domainstovalidateviadnsdisplayonly, ['DOMAINTYPE', 'SanOrder'])

                }
                else {
                    var domainItems = [];
                    domainItems.CommonName = $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.CommonName;
                    domainItems.DomainType = "PRIMARY";

                    $scope.DomainsToBeProtected = [];
                    $scope.DomainsToBeProtected.push(domainItems);
                    for (var i = 0; i < $scope.addonDomains.length; i++) {
                        if ($scope.addonDomains[i].CommonName != null && $scope.addonDomains[i].CommonName != '' && $scope.addonDomains[i].CommonName != undefined) {
                            domainItems = [];
                            domainItems.CommonName = $scope.addonDomains[i].CommonName;
                            domainItems.DomainType = "SECONDARY";
                            $scope.DomainsToBeProtected.push(domainItems);
                        }
                    }
                }


                // BELOW VARIABLE TO DISPLAY THE PRIMARY DOMAIN + ADD ON DOMAINS IN CONFORMATION PAGE FOR 3-STEPS ACTIVATION
                $scope.ClearSummaryMsgAndScrollTop();
                if ($scope.SSLInfoSectionViewModel.IsDCVStepRequired)
                    $scope.wizardstep = 5;
                else
                    $scope.wizardstep = 4;
            }
        }
            /*
            when $scope.SSLInfoSectionViewModel.IsDCVStepRequired =true and $scope.wizardstep == 5 then the step is in Confirmation 
            or when $scope.SSLInfoSectionViewModel.IsDCVStepRequired =false  and $scope.wizardstep == 4 then the step is in Confirmation 
            */
        else if (($scope.wizardstep == 5 && $scope.SSLInfoSectionViewModel.IsDCVStepRequired) || (!$scope.SSLInfoSectionViewModel.IsDCVStepRequired && $scope.wizardstep == 4)) {
            $scope.AssignValuesToModel();
            $scope.SSLInfoSectionViewModel.Webserver = $scope.WebServer;
            $scope.AsynchronousWizardConfirmation.Click();

        }
    }
    //SETTING FOCUS TO CSR CODE TEXTBOX. WHILE CLICKING EDITCSRCODE BUTTON 
    $(document).ready(function () {
        $("#EditCSR").click(function () {
            $("#CSRCode").focus();
        });
    });

    //FUNCTION TO SET THE WEIZARD STEP. THIS IS MAINLY USED TO SET THE BACKWARD STEP( EX. FROM STEP 3 TO STEP 2 / STEP 2 TO STEP 1
    $scope.setStep = function (step) {

        $scope.ClearValuesOnStepBackward(step);
        $scope.wizardstep = step;


    }

    // NG-MODEL VALUE FOR THE SELECTED DCV METHOD FOR PRIMARY DOMAIN
    $scope.selecteddcvmethod = "";

    //FUNCTION TO GET THE PROFILE INFO AND FILL THE INFO IN THE CORRESPONDING TEXTBOXES IN THE  TECHNICAL CONTACTS SECTION
    //$scope.alwaysenablecheckbox = '1';
    var ContactPanel = '';
    var ddlPhoneCodeTechnical = $('form[name="frmTechContacts"] select#PhoneCode');
    var ddlCountryTechnical = $('form[name="frmTechContacts"] select#TechContactsCountry');
    var ddlFaxCodeTechnical = $('form[name="frmTechContacts"] select#FaxCode');
    $scope.SetNamecheapPrimaryContact = new pageHelper.AsyncStateBehavior(
       {
           constructor: function () {
               var instance = this.instance;
               instance.onChange = function (param) {
                   ContactPanel = param;
                   if ($scope.TechContacts.CheckUseNamecheapContacts && ContactPanel == 'Tech') {
                       sslRepository.sslInfo.GetNamecheapPrimaryContactDetails().then(function (result) {
                           instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                       });
                   }
                   if (!$scope.TechContacts.CheckUseNamecheapContacts && ContactPanel == 'Tech') {
                       if (ddlPhoneCodeTechnical.length) {
                           $(ddlPhoneCodeTechnical).prop("disabled", false);
                       }
                       if (ddlCountryTechnical.length) {
                           $(ddlCountryTechnical).prop("disabled", false);
                       }
                       if (ddlFaxCodeTechnical.length) {
                           $(ddlFaxCodeTechnical).prop("disabled", false);
                       }
                       $scope.TechContacts.FirstName = '';
                       $scope.TechContacts.LastName = '';
                       $scope.TechContacts.Address = '';
                       $scope.TechContacts.Address1 = '';
                       $scope.TechContacts.CompanyName = '';
                       $scope.TechContacts.JobTitle = '';
                       $scope.TechContacts.PhoneNumber = '';
                       $scope.TechContacts.FaxNumber = '';
                       $scope.TechContacts.ZIPPostalCode = '';
                       $scope.TechContacts.StateProvince = '';
                       $scope.TechContacts.City = '';
                       $scope.TechContacts.PhoneNumberExt = '';
                       $scope.TechContacts.EmailAddress = '';
                       $scope.TechContacts.PhoneCode = '';
                       $scope.TechContacts.FaxCode = '';
                       $scope.TechContacts.Country = '';
                       if (ddlPhoneCodeTechnical.length) {
                           ddlPhoneCodeTechnical.select2("val", '');
                       }

                       if (ddlCountryTechnical.length) {
                           ddlCountryTechnical.select2("val", countryCodeForContacts);
                       }
                       if (ddlFaxCodeTechnical.length) {
                           ddlFaxCodeTechnical.select2("val", '');
                       }
                       $scope.TechContacts.PhoneExtCheckBox = false;
                       if ($("#PhSectionTechnical").length) {
                           $("#PhSectionTechnical").removeClass("has-extension");
                       }
                       if ($("#PhSectionTechMin").length) {
                           $("#PhSectionTechMin").removeClass("has-extension");
                       }
                   }


               }
           },
           onSuccess: function (params) {
               //if ($scope.TechContacts.CheckUseNamecheapContacts && ContactPanel == 'Tech') {
