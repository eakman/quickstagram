            //},
            "US": {
                // http://www.geopostcodes.com/USA
                "states": {
                    "AL": ["AL", "Alabama"],
                    "AK": ["AK", "Alaska"],
                    "AZ": ["AZ", "Arizona"],
                    "AR": ["AR", "Arkansas"],
                    "CA": ["CA", "California"],
                    "CO": ["CO", "Colorado"],
                    "CT": ["CT", "Connecticut"],
