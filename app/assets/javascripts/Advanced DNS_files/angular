    ncGridModule.directive('ncTopPagination', ['$compile', 'ncGridTemplateService', 'ncGridTemplatesProperties', function ($compile, ncGridTemplateService, ncGridTemplatesProperties) {
        return {
            restrict: "E",
            replace: true,
            scope: true,
            link: function (scope, element) {
                ncGridTemplateService(ncGridTemplatesProperties.topPignationTmpId).then(function (template) {
                    if (template != null) {
                        element.replaceWith($compile(template)(scope));
                    } else {
                        throw "Error: ncGrid Top Pignation.";
                    }
                });
                scope.$on('ncGridParametersIsBinded', function () {
                    scope.$parameters.pagination.isTopEnabled = true;
                });

                scope.setPreviousPage = function () {
                    scope.$settings.pagination.setPreviousPage();
                    scope.scrollToTopOfGrid();
                };
                scope.setNextPage = function () {
                    scope.$settings.pagination.setNextPage();
                    scope.scrollToTopOfGrid();

                };
                scope.changePageSize = function (pagesize) {
                    scope.$settings.pagination.changePageSize(pagesize);
                    scope.scrollToTopOfGrid();
                };
            }
        };
    }]);

