			MXE: { name: "MXE Record", sortValue: 7, filterTitle: "MXE", rowClass: "", type: "MXE", viewTemplatePath: "advancedDns_MXE_view", editTemplatePath: "advancedDns_MXE_edit", focusedFields: { host: false, idAddress: false, ttl: false, recordType: false } },
			NS: { name: "NS Record", sortValue: 8, filterTitle: "NS", rowClass: "", type: "NS", viewTemplatePath: "advancedDns_NS_view", editTemplatePath: "advancedDns_NS_edit", focusedFields: { host: false, nameServer: false, ttl: false, recordType: false } },
			SRV: { name: "SRV Record", sortValue: 9, filterTitle: "SRV", rowClass: "srv-record", type: "SRV", viewTemplatePath: "advancedDns_SRV_view", editTemplatePath: "advancedDns_SRV_edit", focusedFields: { service: false, protocol: false, priority: false, weight: false, port: false, target: false, recordType: false } },
			TXT: { name: "TXT Record", sortValue: 10, filterTitle: "TXT", rowClass: "", type: "TXT", viewTemplatePath: "advancedDns_TXT_view", editTemplatePath: "advancedDns_TXT_edit", focusedFields: { host: false, value: false, ttl: false, recordType: false } },
			URL: { name: "URL Redirect Record", sortValue: 11, filterTitle: "URL Redirect", rowClass: "url-record", type: "URL", viewTemplatePath: "advancedDns_URL_view", editTemplatePath: "advancedDns_URL_edit", focusedFields: { destinationURL: false, urlType: false, meta: false, recordType: false } },
		}

		var availableUrlTypes = {
			Masked: { name: "Masked", sortValue: 0 },
			Unmasked: { name: "Unmasked", sortValue: 1 },
			Permanent: { name: "Permanent (301)", sortValue: 2 }
		}
		var availableTtlTypes = {
			1799: { name: "Automatic", value: 1799, sortValue: 0 },
			3600: { name: "60 min", value: 3600, sortValue: 1 },
			1800: { name: "30 min", value: 1800, sortValue: 2 },
			1200: { name: "20 min", value: 1200, sortValue: 3 },
			300: { name: "5 min", value: 300, sortValue: 4 },
			60: { name: "1 min", value: 60, sortValue: 5 }
		};

		var commonValidationPattern = {
			url: '^(?!mailto:)(?:(?:http|https|ftp)://)(?:\\S+(?::\\S*)?@)?(?:(?:(?:[1-9]\\d?|1\\d\\d|2[01]\\d|22[0-3])(?:\\.(?:1?\\d{1,2}|2[0-4]\\d|25[0-5])){2}(?:\\.(?:[0-9]\\d?|1\\d\\d|2[0-4]\\d|25[0-4]))|(?:(?:[a-z\\u00a1-\\uffff0-9]+-?)*[a-z\\u00a1-\\uffff0-9]+)(?:\\.(?:[a-z\\u00a1-\\uffff0-9]+-?)*[a-z\\u00a1-\\uffff0-9]+)*(?:\\.(?:[a-z\\u00a1-\\uffff]{2,})))|localhost)(?::\\d{2,5})?(?:(/|\\?|#)[^\\s]*)?$',
			host: "^@$|^\$|^[*a-zA-Z0-9._-]+$",
			destinationURL: "^[a-zA-Z0-9.\-_\/.-~:?[]@#!$&'()*+,;=%]*$",
			ipv6Address: "^s*((([0-9A-Fa-f]{1,4}:){7}([0-9A-Fa-f]{1,4}|:))|(([0-9A-Fa-f]{1,4}:){6}(:[0-9A-Fa-f]{1,4}|((25[0-5]|2[0-4]d|1dd|[1-9]?d)(.(25[0-5]|2[0-4]d|1dd|[1-9]?d)){3})|:))|(([0-9A-Fa-f]{1,4}:){5}(((:[0-9A-Fa-f]{1,4}){1,2})|:((25[0-5]|2[0-4]d|1dd|[1-9]?d)(.(25[0-5]|2[0-4]d|1dd|[1-9]?d)){3})|:))|(([0-9A-Fa-f]{1,4}:){4}(((:[0-9A-Fa-f]{1,4}){1,3})|((:[0-9A-Fa-f]{1,4})?:((25[0-5]|2[0-4]d|1dd|[1-9]?d)(.(25[0-5]|2[0-4]d|1dd|[1-9]?d)){3}))|:))|(([0-9A-Fa-f]{1,4}:){3}(((:[0-9A-Fa-f]{1,4}){1,4})|((:[0-9A-Fa-f]{1,4}){0,2}:((25[0-5]|2[0-4]d|1dd|[1-9]?d)(.(25[0-5]|2[0-4]d|1dd|[1-9]?d)){3}))|:))|(([0-9A-Fa-f]{1,4}:){2}(((:[0-9A-Fa-f]{1,4}){1,5})|((:[0-9A-Fa-f]{1,4}){0,3}:((25[0-5]|2[0-4]d|1dd|[1-9]?d)(.(25[0-5]|2[0-4]d|1dd|[1-9]?d)){3}))|:))|(([0-9A-Fa-f]{1,4}:){1}(((:[0-9A-Fa-f]{1,4}){1,6})|((:[0-9A-Fa-f]{1,4}){0,4}:((25[0-5]|2[0-4]d|1dd|[1-9]?d)(.(25[0-5]|2[0-4]d|1dd|[1-9]?d)){3}))|:))|(:(((:[0-9A-Fa-f]{1,4}){1,7})|((:[0-9A-Fa-f]{1,4}){0,5}:((25[0-5]|2[0-4]d|1dd|[1-9]?d)(.(25[0-5]|2[0-4]d|1dd|[1-9]?d)){3}))|:)))(%.+)?s*",
			ipAddress: /^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$/,
			srvServiceProtocol: /^_[0-9A-Za-z_\\.\\-]/,
			srvWeightPortMaxValue: 65535,
			priorityMaxValue: 255,
			intagerOneToFive: /^\d{1,5}$/,
			nc: /^([a-zA-Z0-9]+[a-zA-Z0-9\-\.]{0,99}[a-zA-Z0-9]+\.)([a-zA-Z0-9]+[a-zA-Z0-9\-]{0,60}[a-zA-Z0-9]+\.[a-zA-Z\-\.]{2,20})$/
		}

		var getRestrictedRecordType = function(savedModel) {
			if (savedModel.RecordType == 1)
				return (savedModel.IsDynDns == true) ? recordTypes.AdDns : recordTypes.A;
			else if (savedModel.RecordType == 2)
				return recordTypes.CNAME;
			else if (savedModel.RecordType == 3)
				return recordTypes.MX;
			else if (savedModel.RecordType == 4)
				return recordTypes.MXE;
			else if (savedModel.RecordType == 5)
				return recordTypes.TXT;
			else if (savedModel.RecordType == 6 || savedModel.RecordType == 7 || savedModel.RecordType == 10)
				return recordTypes.URL;
			else if (savedModel.RecordType == 8)
				return recordTypes.AAAA;
			else if (savedModel.RecordType == 9)
				return recordTypes.NS;
			else if (savedModel.RecordType == 11)
				return recordTypes.SRV;

			return recordTypes.Unknown;
		}

		var getRealRecordType = function(selectedRecordTypeValue) {
			selectedRecordTypeValue = selectedRecordTypeValue.toString();
			var realRecordType = 0;
			if (selectedRecordTypeValue == recordTypes.A.sortValue.toString() || selectedRecordTypeValue == recordTypes.AdDns.sortValue.toString()) {
				realRecordType = 1;
			} else if (recordTypes.AAAA.sortValue.toString() == selectedRecordTypeValue)
				realRecordType = 8;
			else if (recordTypes.CNAME.sortValue.toString() == selectedRecordTypeValue)
				realRecordType = 2;
			else if (recordTypes.MX.sortValue.toString() == selectedRecordTypeValue)
				realRecordType = 3;
			else if (recordTypes.MXE.sortValue.toString() == selectedRecordTypeValue)
				realRecordType = 4;
			else if (recordTypes.NS.sortValue.toString() == selectedRecordTypeValue)
				realRecordType = 9;
			else if (recordTypes.SRV.sortValue.toString() == selectedRecordTypeValue)
				realRecordType = 11;
			else if (recordTypes.TXT.sortValue.toString() == selectedRecordTypeValue)
				realRecordType = 5;
			return realRecordType;
		}

		var getRealTtlTypes = function(selectedTtlvalue) {
			if (selectedTtlvalue != null) {
				var keys = Object.keys(availableTtlTypes);
				for (var i = 0; i < keys.length; i++) {
					if (availableTtlTypes[keys[i]].sortValue == selectedTtlvalue) {
						return availableTtlTypes[keys[i]].value;
					}
				}
			}
			return availableTtlTypes['1799'].value;
		}

		var initDefaultEditModel = function(recordType) {
			return {
				viewModel: function(savedModel) {
					var viewModel = savedModel;
					viewModel.selectedRecordTypeValue = recordType.name;
					if (savedModel.Ttl != 0 && availableTtlTypes[savedModel.Ttl] != null) {
						viewModel.selectedTtlTypeValue = availableTtlTypes[savedModel.Ttl].name;
					} else {
						viewModel.selectedTtlTypeValue = availableTtlTypes['1799'].name;
					}


					return viewModel;
				},
				editModel: function(prevEditModel, savedModel) {
					var editModel = (prevEditModel) ? prevEditModel : (savedModel) ? this.viewModel(savedModel) : {};

					editModel.selectedRecordTypeValue = recordType.sortValue;
					if (savedModel == null && editModel.selectedTtlTypeValue == null) {
						editModel.selectedTtlTypeValue = availableTtlTypes['1799'].sortValue;
					} else if (savedModel && savedModel.Ttl) {
						if (savedModel.Ttl != 0 && availableTtlTypes[savedModel.Ttl] != null) {
							editModel.selectedTtlTypeValue = availableTtlTypes[savedModel.Ttl].sortValue;
						} else {
							editModel.selectedTtlTypeValue = availableTtlTypes['1799'].sortValue;
						}
					}

					$timeout(function() {
						editModel.selectedRecordTypeValue = editModel.selectedRecordTypeValue.toString();
						editModel.selectedTtlTypeValue = editModel.selectedTtlTypeValue.toString();
					});

					editModel.canSave = function() {
						if (editModel.hostForm.$valid && editModel.valueForm.$valid)
							return true;
						angular.forEach(editModel.hostForm.$error.required, function(field) {
							field.$setDirty();
						});
						angular.forEach(editModel.valueForm.$error.required, function(field) {
							field.$setDirty();
						});
						return false;
					}
					editModel.getRealModel = function() {
						var saveModel = angular.copy(editModel);
						saveModel.RecordType = getRealRecordType(editModel.selectedRecordTypeValue);
						saveModel.Ttl = getRealTtlTypes(editModel.selectedTtlTypeValue);

						delete saveModel.selectedRecordTypeValue;
						delete saveModel.selectedTtlTypeValue;
						delete saveModel.valueForm;
						delete saveModel.hostForm;
						delete saveModel.recordModel;
						delete saveModel.isMetaFilled;
						delete saveModel.tmpMetaTitle;
						delete saveModel.tmpMetaDescription;
						delete saveModel.tmpMetaKeywords;
						delete saveModel.selectedUrlTypeValue;

						return saveModel;
					}
					editModel.isTheSameWithPrevSaved = function() {
						if (!editModel.recordModel) return false;
						var shortSaved = angular.copy(editModel.recordModel);
						delete shortSaved.selectedRecordTypeValue;
						delete shortSaved.selectedTtlTypeValue;
						delete shortSaved.valueForm;
						delete shortSaved.hostForm;
						var shortEdit = editModel.getRealModel();
						//delete shortEdit.selectedRecordTypeValue;
						//delete shortEdit.selectedTtlTypeValue;
						//delete shortEdit.valueForm;
						//delete shortEdit.hostForm;
						//delete shortEdit.recordModel;
						//delete shortEdit.isMetaFilled;
						//delete shortEdit.tmpMetaTitle ;
						//delete shortEdit.tmpMetaDescription ;
						//delete shortEdit.tmpMetaKeywords;
						//delete shortEdit.selectedUrlTypeValue;
						return JSON.stringify(shortSaved) === JSON.stringify(shortEdit);
					}
					return editModel;
				}
			}
		}

		var initARecord = {
			viewModel: function(savedModel) {
				var viewModel = initDefaultEditModel(recordTypes.A).viewModel(savedModel);
				return viewModel;
			},
			editModel: function(prevEditModel, savedModel) {
				var editModel = initDefaultEditModel(recordTypes.A).editModel(prevEditModel, savedModel);
				editModel.getRealModel = function() {
					var saveModel = angular.copy(editModel);
					saveModel.IsDynDns = false;
					saveModel.RecordType = getRealRecordType(editModel.selectedRecordTypeValue);
					saveModel.Ttl = getRealTtlTypes(editModel.selectedTtlTypeValue);

					delete saveModel.selectedRecordTypeValue;
					delete saveModel.selectedTtlTypeValue;
					delete saveModel.valueForm;
					delete saveModel.hostForm;
					delete saveModel.recordModel;
					delete saveModel.isMetaFilled;
					delete saveModel.tmpMetaTitle;
					delete saveModel.tmpMetaDescription;
					delete saveModel.tmpMetaKeywords;
					delete saveModel.selectedUrlTypeValue;

					return saveModel;
				}
				return editModel;
			}
		}
		var initAdDnsRecordTypeEditModel = {
			viewModel: function(savedModel) {
				var viewModel = initDefaultEditModel(recordTypes.AdDns).viewModel(savedModel);
				return viewModel;
			},
			editModel: function(prevEditModel, savedModel) {
				var editModel = initDefaultEditModel(recordTypes.AdDns).editModel(prevEditModel, savedModel);
				editModel.getRealModel = function() {
					var saveModel = angular.copy(editModel);
					saveModel.IsDynDns = true;
					saveModel.RecordType = getRealRecordType(editModel.selectedRecordTypeValue);
					saveModel.Ttl = getRealTtlTypes(editModel.selectedTtlTypeValue);

					delete saveModel.selectedRecordTypeValue;
					delete saveModel.selectedTtlTypeValue;
					delete saveModel.valueForm;
					delete saveModel.hostForm;
					delete saveModel.recordModel;
					delete saveModel.isMetaFilled;
					delete saveModel.tmpMetaTitle;
					delete saveModel.tmpMetaDescription;
					delete saveModel.tmpMetaKeywords;
					delete saveModel.selectedUrlTypeValue;

					return saveModel;
				}
				return editModel;
			}
		}
		var initAaaaRecordTypeEditModel = {
			viewModel: function(savedModel) {
				var viewModel = initDefaultEditModel(recordTypes.AAAA).viewModel(savedModel);
				return viewModel;
			},
			editModel: function(prevEditModel, savedModel) {
				var editModel = initDefaultEditModel(recordTypes.AAAA).editModel(prevEditModel, savedModel);
				return editModel;
			}
		}
		var initCnameRecordTypeEditModel = {
			viewModel: function(savedModel) {
				var viewModel = initDefaultEditModel(recordTypes.CNAME).viewModel(savedModel);
				return viewModel;
			},
			editModel: function(prevEditModel, savedModel) {
				var editModel = initDefaultEditModel(recordTypes.CNAME).editModel(prevEditModel, savedModel);
				return editModel;
			}
		}
		var initSrvRecordTypeEditModel = {
			viewModel: function(savedModel) {
				var viewModel = initDefaultEditModel(recordTypes.SRV).viewModel(savedModel);
				return viewModel;
			},
			editModel: function(prevEditModel, savedModel) {
				var editModel = initDefaultEditModel(recordTypes.SRV).editModel(prevEditModel, savedModel);
				return editModel;
			}
		}
		var initTxtRecordTypeEditModel = {
			viewModel: function(savedModel) {
				var viewModel = initDefaultEditModel(recordTypes.TXT).viewModel(savedModel);
				return viewModel;
			},
			editModel: function(prevEditModel, savedModel) {
				var editModel = initDefaultEditModel(recordTypes.TXT).editModel(prevEditModel, savedModel);
				return editModel;
			}
		}
		var initNsRecordTypeEditModel = {
			viewModel: function(savedModel) {
				var viewModel = initDefaultEditModel(recordTypes.NS).viewModel(savedModel);
				return viewModel;
			},
			editModel: function(prevEditModel, savedModel) {
				var editModel = initDefaultEditModel(recordTypes.NS).editModel(prevEditModel, savedModel);
				return editModel;
			}
		}
		var initUrlRecordTypeEditModel = {
			isMetaFilled: function(modelInstance) {
				if (modelInstance.MetaTitle == null || modelInstance.MetaKeywords == null || modelInstance.MetaDescription == null) {
					modelInstance.MetaTitle = "";
					modelInstance.MetaKeywords = "";
					modelInstance.MetaDescription = "";
				}
				return modelInstance.MetaTitle.length != 0 || modelInstance.MetaKeywords.length != 0 || modelInstance.MetaDescription.length != 0;
			},

			getSelectedUrlType: function(savedModel) {
				if (savedModel.RecordType == 6) {
					return availableUrlTypes.Unmasked;
				} else if (savedModel.RecordType == 7) {
					return availableUrlTypes.Masked;
				} else if (savedModel.RecordType == 10) {
					return availableUrlTypes.Permanent;
				}
				return availableUrlTypes.Unmasked;

			},
			viewModel: function(savedModel) {
				var viewModel = initDefaultEditModel(recordTypes.URL).viewModel(savedModel);
				viewModel.isMetaFilled = this.isMetaFilled(viewModel);
				viewModel.urlType = this.getSelectedUrlType(savedModel);
				viewModel.selectedUrlTypeValue = viewModel.urlType.sortValue;
				return viewModel;
			},
			editModel: function(prevEditModel, savedModel) {
				var editModel = initDefaultEditModel(recordTypes.URL).editModel(prevEditModel, savedModel);
				if (prevEditModel == null && savedModel != null) {
					editModel.selectedUrlTypeValue = this.getSelectedUrlType(savedModel).sortValue;
				} else {
					editModel.selectedUrlTypeValue = availableUrlTypes.Unmasked.sortValue;
				}
				if (savedModel) {
					editModel.isMetaFilled = this.isMetaFilled(editModel);
				} else {
					editModel.isMetaFilled = editModel.selectedUrlTypeValue == 7;
				}

				$timeout(function() {
					editModel.selectedUrlTypeValue = editModel.selectedUrlTypeValue.toString();
				});

				editModel.openMeta = function() {
					editModel.tmpMetaTitle = editModel.MetaTitle;
					editModel.tmpMetaDescription = editModel.MetaDescription;
					editModel.tmpMetaKeywords = editModel.MetaKeywords;
				}

				editModel.isMetaFilledValid = function() {
					if ((!editModel.tmpMetaTitle || editModel.tmpMetaTitle.length <= 100) && (!editModel.tmpMetaDescription || editModel.tmpMetaDescription.length <= 250) && (!editModel.tmpMetaKeywords || editModel.tmpMetaKeywords.length <= 250)) {
						return true;
					}
					return false;
				}

				editModel.saveMeta = function(e) {
					if (editModel.isMetaFilledValid()) {
						editModel.MetaTitle = editModel.tmpMetaTitle;
						editModel.MetaDescription = editModel.tmpMetaDescription;
						editModel.MetaKeywords = editModel.tmpMetaKeywords;
						angular.element(e.target).closest(".is-active").removeClass("is-active");
					}
				}

				editModel.getRealModel = function() {
					var saveModel = angular.copy(editModel);
					if (editModel.selectedUrlTypeValue.toString() == availableUrlTypes.Unmasked.sortValue.toString()) {
						saveModel.RecordType = 6;
					} else if (editModel.selectedUrlTypeValue.toString() == availableUrlTypes.Masked.sortValue.toString()) {
						saveModel.RecordType = 7;
					} else if (editModel.selectedUrlTypeValue.toString() == availableUrlTypes.Permanent.sortValue.toString()) {
						saveModel.RecordType = 10;
					}
					delete saveModel.selectedRecordTypeValue;
					delete saveModel.selectedTtlTypeValue;
					delete saveModel.valueForm;
					delete saveModel.hostForm;
					delete saveModel.recordModel;
					delete saveModel.isMetaFilled;
					delete saveModel.tmpMetaTitle;
					delete saveModel.tmpMetaDescription;
					delete saveModel.tmpMetaKeywords;
					delete saveModel.selectedUrlTypeValue;

					return saveModel;
				}
				return editModel;
			}
		}
		var initMxRecordTypeEditModel = {
			viewModel: function(savedModel) {
				var viewModel = initDefaultEditModel(recordTypes.MX).viewModel(savedModel);
				return viewModel;
			},
			editModel: function(prevEditModel, savedModel) {
				var editModel = initDefaultEditModel(recordTypes.MX).editModel(prevEditModel, savedModel);
				return editModel;
			}
		}
		var initMxeRecordTypeEditModel = {
			viewModel: function(savedModel) {
				var viewModel = initDefaultEditModel(recordTypes.MXE).viewModel(savedModel);
				return viewModel;
			},
			editModel: function(prevEditModel, savedModel) {
				var editModel = initDefaultEditModel(recordTypes.MXE).editModel(prevEditModel, savedModel);
				return editModel;
			}
		}

		var initDnsSecRecordTypeEditModel = {
			viewModel: function(savedModel) {
				var viewModel = savedModel;
				if (viewModel.AlgorythmType != null) {
					viewModel.algorythmTypeTitle = $filter('propertyFilter')(dnsSecAlgorithmType, { "value": viewModel.AlgorythmType })[0].name;
				} else {
					viewModel.algorythmTypeTitle = dnsSecAlgorithmType[0].name;
				}

				if (viewModel.DigestType != null) {
					viewModel.digestTypeTitle = $filter('propertyFilter')(dnsSecDigestType, { "value": viewModel.DigestType })[0].name;;
				} else {
					viewModel.digestTypeTitle = dnsSecDigestType[0].name;
				}

				return viewModel;
			},


			editModel: function(prevEditModel, savedModel) {
				var editModel = (prevEditModel) ? prevEditModel : (savedModel) ? this.viewModel(savedModel) : {};

				if (editModel.AlgorythmType != null) {
					editModel.selectedDnsSecAlgorithmType = $filter('propertyFilter')(dnsSecAlgorithmType, { "value": savedModel.AlgorythmType })[0].sortValue;
				} else {
					editModel.selectedDnsSecAlgorithmType = 0;
				}

				if (editModel.DigestType != null) {
					editModel.selecteddnsSecDigestType = $filter('propertyFilter')(dnsSecDigestType, { "value": savedModel.DigestType })[0].sortValue;
				} else {
					editModel.selecteddnsSecDigestType = 0;
				}

				$timeout(function() {
					editModel.selectedDnsSecAlgorithmType = editModel.selectedDnsSecAlgorithmType.toString();
					editModel.selecteddnsSecDigestType = editModel.selecteddnsSecDigestType.toString();
				});

				editModel.canSave = function() {
					if (editModel.hostForm.$valid && editModel.valueForm.$valid)
						return true;
					angular.forEach(editModel.hostForm.$error.required, function(field) {
						field.$setDirty();
					});
					angular.forEach(editModel.valueForm.$error.required, function(field) {
						field.$setDirty();
					});
					return false;
				}

				editModel.getRealModel = function() {
					var saveModel = angular.copy(editModel);
					saveModel.KeyTag = parseInt(saveModel.KeyTag);
					dnsSecAlgorithmType.forEach(function(element) {
						if (element.sortValue.toString() == saveModel.selectedDnsSecAlgorithmType) {
							saveModel.AlgorythmType = element.value;
						}
					});

					dnsSecDigestType.forEach(function(element) {
						if (element.sortValue.toString() == saveModel.selecteddnsSecDigestType) {
							saveModel.DigestType = element.value;
						}
					});

					delete saveModel.selectedDnsSecAlgorithmType;
					delete saveModel.selecteddnsSecDigestType;
					delete saveModel.valueForm;
					delete saveModel.hostForm;
					delete saveModel.modalForm;
					delete saveModel.digestTypeTitle;
					delete saveModel.algorythmTypeTitle;
					delete saveModel.canSave;
					delete saveModel.getRealModel;
					delete saveModel.isTheSameWithPrevSaved;
					delete saveModel.recordModel;
					delete saveModel.onDigestChange;
					delete saveModel.onKeyTagChange;

					return saveModel;
				}

				editModel.isTheSameWithPrevSaved = function() {
					if (!editModel.recordModel) return false;
					var shortSaved = angular.copy(editModel.recordModel);
					delete shortSaved.selectedDnsSecAlgorithmType;
					delete shortSaved.selecteddnsSecDigestType;
					delete shortSaved.valueForm;
					delete shortSaved.hostForm;
					delete shortSaved.modalForm

					var shortEdit = editModel.getRealModel();
					return JSON.stringify(shortSaved) === JSON.stringify(shortEdit);
				}

				editModel.onKeyTagChange = function(isModal) {
					editModel[isModal ? "modalForm" : "hostForm"].keyTag.$setValidity('pattern', parseInt(editModel.KeyTag) && editModel.KeyTag.toString() == parseInt(editModel.KeyTag).toString());
					editModel[isModal ? "modalForm" : "hostForm"].keyTag.$setValidity('range', parseInt(editModel.KeyTag) <= 65535 && parseInt(editModel.KeyTag) >= 0);
				}

				function isHexValid(dataToCheck) {
					var regexHexData = /^[0-9A-Fa-f]+$/;
					var isValid = regexHexData.test(dataToCheck);
					return isValid;
				}

				editModel.onDigestChange = function (isModal) {

				    editModel[isModal ? "modalForm" : "valueForm"].digest.currentLength = (editModel.Digest.length)?editModel.Digest.length:0;
					editModel[isModal ? "modalForm" : "valueForm"].digest.$setValidity('digestLength', true);
					editModel[isModal ? "modalForm" : "valueForm"].digest.$setValidity('digestDataIncorrect', true);

					for (var i = 0; i < dnsSecDigestType.length; i++) {
						if (editModel.Digest.length != dnsSecDigestType[i].validationLength && editModel.selecteddnsSecDigestType == dnsSecDigestType[i].sortValue.toString()) {
							editModel[isModal ? "modalForm" : "valueForm"].digest.needLength = dnsSecDigestType[i].validationLength;
							editModel[isModal ? "modalForm" : "valueForm"].digest.$setValidity('digestLength', false);
						}
					}

					if (!isHexValid(editModel.Digest)) {
						editModel[isModal ? "modalForm" : "valueForm"].digest.$setValidity('digestDataIncorrect', false);
					}
					editModel[isModal ? "modalForm" : "valueForm"].digest.$setDirty();
				} // onDigestChange

				return editModel;
			}
		}

		return {
			DNSProviderSubType: DNSProviderSubType,
			realHostType: realHostType,
			availableEmailProviders: availableEmailProviders,
			validationPattern: commonValidationPattern,
			getRestrictedRecordType: getRestrictedRecordType,
			recordTypes: recordTypes,
			availableUrlTypes: availableUrlTypes,
			availableTtlTypes: availableTtlTypes,
			A: initARecord,
			AdDns: initAdDnsRecordTypeEditModel,
			AAAA: initAaaaRecordTypeEditModel,
			CNAME: initCnameRecordTypeEditModel,
			SRV: initSrvRecordTypeEditModel,
			TXT: initTxtRecordTypeEditModel,
			URL: initUrlRecordTypeEditModel,
			NS: initNsRecordTypeEditModel,
			MX: initMxRecordTypeEditModel,
			MXE: initMxeRecordTypeEditModel,
			DnsSec: initDnsSecRecordTypeEditModel,
			dnsSecDigestType: dnsSecDigestType,
			dnsSecAlgorithmType: dnsSecAlgorithmType
		}
	}
]);
app.factory('domainTransferInService', ['$modal',function ($modal) {
	var authorizeTransfer = function (domainName, transferId) {
		var authorizeTransferModal = $modal.open({
			templateUrl: "/Domains/TransferIn/AuthorizeTransferModal/Get",
			controller: 'domainTransferAuthorizeModalCtrl',
			size: 'lg',
			backdrop: 'static',
			keyboard: false,
			resolve: {
				modalInteraction: function () {
					return {
						domainName: domainName,
						transferId: transferId
					};
				}
			}
		});

		return authorizeTransferModal.result;
	}
	var getStarted= function(domainName) {
		var getStartedModal = $modal.open({
			templateUrl: "/Domains/TransferIn/TransferInGetStartedModal/Get",
			controller: 'domainTransferGetStartedModalCtrl',
			size: 'lg',
			backdrop: 'static',
			keyboard: false,
			resolve: {
				modalInteraction: function () {
					return {
						domainName: domainName,
					};
				}
			}
		});

		return getStartedModal.result;
	}

	return {
		showAuthorizeTransferModal: authorizeTransfer,
		showGetStartedModal: getStarted
	}

}]);

;
(function () {
	app.factory('domainRenew', [
		'pageHelper',
		'cartService',
		'domainStatuses',
		'$q',
		'expiringSoonService',
		function (pageHelper, cartService, domainStatuses, $q, expiringSoonService) {
			var GlobalErrorMessages = window.GlobalErrorMessages || {};
			var ExpiringSoonMessages = window.ExpiringSoonMessages || {};
			var unexpectedError = GlobalErrorMessages.error_Site_PleaseTryAgain;
			var renewCauses = {
				domain: 'domain',
				whoisGuard: 'whosiguard',
				premiumDns: 'premiumDns'
			};

			return {
				wrapInBehaviour: function(currentDomain, notifications) {
					currentDomain.Status = domainStatuses.getIconFromStatusEnum(currentDomain.Status);
					currentDomain.HasSeparatePrice = currentDomain.IsPremiumDomain;
					currentDomain.ExpirationDateUnix = new Date(currentDomain.ExpirationDate).getTime();
					currentDomain.behavior = getBehaviour(currentDomain, notifications);
					currentDomain.behavior.updatePrice();
				}
			};

			function getBehaviour(domain, notifications) {
				return new pageHelper.AsyncStateBehavior({
					constructor: function () {
						var instance = this.instance;
						angular.extend(instance, {
							updatePrice: function() {
								domain.CalculatedPrice = expiringSoonService.pricing.calculateDomainPrice(domain);
							},
							premiumDnsChanged: function() {
								domain.behavior.updatePrice();
								if (domain.IsInCart) {
									instance.renewDomain(renewCauses.premiumDns, domain.PremiumDnsInfo.IsEnabled);
								}
							},
							whoIsGuardChanged: function() {
								domain.behavior.updatePrice();
								if (domain.IsInCart) {
									instance.renewDomain(renewCauses.whoisGuard, domain.WhoisGuardInfo.IsEnabled);
								}
							},
							renewDomain: function(renewCause, newState) {
								renewCause = renewCause || renewCauses.domain;
								instance.asyncStatus(pageHelper.AsyncStatus.Loading);
								return cartService.renewDomain(domain)
									.then(function(result) {
										if (result && result.Error === true) {
											instance.asyncStatus(pageHelper.AsyncStatus.Error, {msg: result.Msg});
											return $q.reject(result.Msg);
										}
									}).then(function() {
										return cartService.getCartItems();
									}).then(function(cartItems) {
										var cartItem = cartService.getDomainByName(cartItems, domain.DomainName);
										if (cartItem == null) {
											instance.asyncStatus(pageHelper.AsyncStatus.Error);
											return;
										}

										domain.IsInCart = true;
										domain.CartItemId = cartItem.Id;
										cartService.notifyCardChanged();
										instance.asyncStatus(pageHelper.AsyncStatus.Success, {
											renewCause: renewCause,
											newState: newState
										});
									});
							}
						});
					},
					onLoading: function () {
						this.instance.loading = true;
					},
					onSuccess: function (opts) {
						var cause = opts.renewCause;
						var stuckNotifications = notifications.stuckNotifications;
						var defaultMessageParams = {
							hasClose: true,
							isAutoHide: true
						};

						this.instance.loading = false;
						if (cause === renewCauses.domain) {
							return;
						}

						if (cause === renewCauses.premiumDns || cause === renewCauses.whoisGuard) {
							if (opts.newState) {
								stuckNotifications.addSuccess(ExpiringSoonMessages.notification_DomainAddonShoppingCartAdd, defaultMessageParams);
							} else {
								stuckNotifications.addSuccess(ExpiringSoonMessages.notification_DomainAddonShoppingCartUpdate, defaultMessageParams);
							}
						}
					},
					onActive: function() {
						this.instance.loading = false;
					},
					onError: function (params) {
						this.instance.loading = false;
						notifications.stuckNotifications.addError(params.msg || unexpectedError, {
							hasClose: true,
							isAutoHide: true
						});
					}
				});
			}
		}
	]);
})();;
app.factory('expiringDomainsList', [
	'pageHelper',
	'httpRepository',
	'ncGridParams',
	'domainStatuses',
	'domainRenew',
	'notificationService',
	'$q',
	'$timeout',
	'cartService',
	'$filter',
	'expiringSoonService',
	function (pageHelper, httpRepository, ncGridParams, domainStatuses, domainRenew, notificationService, $q, $timeout, cartService, $filter, expiringSoonService) {
		'use strict';

		var GlobalErrorMessages = window.GlobalErrorMessages || {};
		var ExpiringSoonMessages = window.ExpiringSoonMessages || {};

		return {
			create: createList
		};

		function createList(cartItemsProvider) {
			var behavior = new pageHelper.AsyncStateBehavior({
				constructor: function () {
					var instance = this.instance;
					instance.showLoadPanel = true;
					instance.showContent = false;
					instance.notifications = new notificationService.instance();
					instance.statusList = domainStatuses.getExpiringStatusFilterValues('Status');
					instance.gridSettings = createGridSettings(instance);
					instance.gridSettings.settings.reload();
					angular.extend(instance, {
						domainIndexDefer: $q.defer(),
						getDomainsIndex: function() {
							return instance.domainIndexDefer.promise;
						},
						bulk: {
							canTogglePdnsOn: function() {
								return expiringSoonService.bulkState.canRenewPdns(instance.gridSettings.parameters.selection.selectedItems);
							},
							canTogglePdnsOff: function() {
								return expiringSoonService.bulkState.canTurnOffPdns(instance.gridSettings.parameters.selection.selectedItems);
							},
							canToggleWhoisGuardOn: function() {
								return expiringSoonService.bulkState.canRenewWg(instance.gridSettings.parameters.selection.selectedItems);
							},
							canToggleWhoisGuardOff: function() {
								return expiringSoonService.bulkState.canTurnOffWg(instance.gridSettings.parameters.selection.selectedItems);
							},
							togglePdnsOn: function() {
								var selectedDomains = instance.gridSettings.parameters.selection.selectedItems;
								setProductsSelectionState(selectedDomains, 'PremiumDnsInfo', true);
							},
							togglePdnsOff: function() {
								var selectedDomains = instance.gridSettings.parameters.selection.selectedItems;
								setProductsSelectionState(selectedDomains, 'PremiumDnsInfo', false);
							},
							toggleWhoisGuardOn: function() {
								var selectedDomains = instance.gridSettings.parameters.selection.selectedItems;
								setProductsSelectionState(selectedDomains, 'WhoisGuardInfo', true);
							},
							toggleWhoisGuardOff: function() {
								var selectedDomains = instance.gridSettings.parameters.selection.selectedItems;
								setProductsSelectionState(selectedDomains, 'WhoisGuardInfo', false);
							},
							addToCart: function() {
								var selectedItems = instance.gridSettings.parameters.selection.selectedItems;
								var stuckNotifications = instance.notifications.stuckNotifications;
								var messageOptions = {
									hasClose: true,
									autoHide: true
								};

								if (selectedItems.length === 0) {
									stuckNotifications.addWarning(ExpiringSoonMessages.warning_NoDomainsSelectedToAddToCart, messageOptions);
									return;
								}

								var selectedNotInCartDomains = selectedItems.filter(function (domain) {
									return !domain.IsInCart;
								});
								if (selectedNotInCartDomains.length === 0) {
									stuckNotifications.addWarning(ExpiringSoonMessages.notification_allDomainsAreInTheCart, messageOptions);
									return;
								}

								return addDomainsToCart(selectedNotInCartDomains, {
									success: ExpiringSoonMessages.notification_DomainsRenewSuccess,
									partialWarning: ExpiringSoonMessages.error_DomainsHasNotBeenAdded
								});
							}
						},

						stopProcessing: angular.noop // just a placeholder, see addDomainsToCart for more details
					});
				},
				onLoading: function() {
					this.instance.operationIsInProgress = true;
				},
				onSuccess: function () {
					var instance = this.instance;
					$timeout(function() {
						instance.showLoadPanel = false;
						instance.showContent = true;
						instance.operationIsInProgress = false;
					});
				},
				onError: function (params) {
					this.instance.notifications.stuckNotifications.addError(params.msg || GlobalErrorMessages.error_Site_PleaseTryAgain, {
						hasClose: true,
						isAutoHide: true
					});
					this.instance.showLoadPanel = false;
					this.instance.operationIsInProgress = false;
				}
			});

			return behavior;

			function addDomainsToCart(domains, messagesConfiguration) {
				behavior.asyncStatus(pageHelper.AsyncStatus.Loading);
				return expiringSoonService.renewWithProcessingStatus(domains, {
					notifications: behavior.notifications,
					getLoadingMessage: processingMessage,
					renewCall: cartService.renewDomains.bind(cartService),
					setupCancellation: function(cancellation) {
						behavior.stopProcessing = cancellation;
					}
				}).then(function(renewedDomains) {
					return updateCartStatus(renewedDomains, messagesConfiguration);
				}).catch(function(result) {
					behavior.asyncStatus(pageHelper.AsyncStatus.Error, {
						msg: result.Msg
					});
				});
			}

			function domainName(domain) {
				return domain.DomainName;
			}

			function partiallyFailedRenewMessage(messageTemplate, domainsMessage) {
				return $filter('stringFormat')(messageTemplate, [domainsMessage])
			}

			function processingMessage(processed, total) {
				return $filter('stringFormat')(ExpiringSoonMessages.notification_AddToCartProcessing, [processed, total]);
			}

			function showOperationNotification(domains, cartItems, messagesConfiguration) {
				var maxDomainsNames = 4;
				var defaultMessageParams = {
					hasClose: true,
					isAutoHide: true
				};
				var domainsAddedToCart = domains.filter(function(domain) {
					return cartService.getDomainByName(cartItems, domain.DomainName) != null;
				});
				var domainsDifference = domains.length - domainsAddedToCart.length;
				var stuckNotifications = behavior.notifications.stuckNotifications;
				if (domainsDifference > maxDomainsNames) {
					stuckNotifications.addWarning(partiallyFailedRenewMessage(messagesConfiguration.partialWarning, domainsDifference + ' item(s)'), defaultMessageParams);
					return;
				}

				if (domainsDifference > 0 && domainsDifference <= maxDomainsNames) {
					var addedDomainNamesToCart = domainsAddedToCart.map(domainName);
					var domainsListing = domains.filter(function(domain) {
						return addedDomainNamesToCart.indexOf(domain.DomainName) < 0;
					}).map(domainName).join(', ');
					stuckNotifications.addWarning(partiallyFailedRenewMessage(messagesConfiguration.partialWarning, domainsListing), defaultMessageParams);
					return;
				}

				stuckNotifications.addSuccess(messagesConfiguration.success, defaultMessageParams);
			}

			function updateCartStatus(domains, messagesConfiguration) {
				return cartService.getCartItems()
					.then(function (cartItems) {
						domains.forEach(function (domain) {
							updateDomainCartState(domain, cartItems);
						});

						showOperationNotification(domains, cartItems, messagesConfiguration);
						cartService.notifyCardChanged();
						behavior.asyncStatus(pageHelper.AsyncStatus.Success);
					});
			}

			function setProductsSelectionState(domains, productType, newState) {
				if (domains.length === 0) {
					var message = newState === true
						? ExpiringSoonMessages.warning_NoDomainsSelectedForRenew
						: ExpiringSoonMessages.warning_NoDomainsSelectedForTurnOffRenew;
					behavior.notifications.stuckNotifications.addWarning(message, {
						hasClose: true,
						isAutoHide: true
					});
					return $q.when(domains || []);
				}

				var domainsToRenew = [],
					currentDomain, i, currentProduct;
				for (i = 0; i < domains.length; i++) {
					currentDomain = domains[i];
					currentProduct = currentDomain[productType];
					if (currentProduct.IsExist && currentProduct.IsEnabled !== newState) {
						if (currentDomain.IsInCart) {
							domainsToRenew.push(currentDomain);
						}

						currentProduct.IsEnabled = newState;
						currentDomain.behavior.updatePrice();
					}
				}

				if (domainsToRenew.length === 0) {
					return $q.when(null);
				}

				behavior.asyncStatus(pageHelper.AsyncStatus.Loading);
				return addDomainsToCart(domainsToRenew, {
					success: ExpiringSoonMessages.notifications_CartHasBeenChanged,
					partialWarning: ExpiringSoonMessages.error_CartUpdatePartiallyFailed
				});
			}

			function createGridSettings(behaviour) {
				var gridSettings = new ncGridParams();
				expiringSoonService.applyCommonGridConfig(gridSettings);
				gridSettings.parameters.search.serchPropertyNames = ['DomainName'];
				gridSettings.settings.ordering.set({
					propertyName: 'ExpirationDateUnix',
					descending: true
				});
				gridSettings.settings.getData = function ($defer, ncGridState) {
					$q.all([
						httpRepository.expiringList.getDomains(ncGridState),
						cartItemsProvider()
					])
					.then(function (resolve) {
						var domainsResponse = resolve[0];
						var cartItems = resolve[1];
						if (!domainsResponse || !domainsResponse.Result || domainsResponse.Error) {
							behaviour.asyncStatus(pageHelper.AsyncStatus.Error);
							$defer.resolve(null);
							return;
						}

						var gridResponse = domainsResponse.Result;
						var transformed = transformDomainListForDisplay(gridResponse.Data, behaviour, cartItems);
						behaviour.itemsLength = gridResponse.TotalServerItemsCount; // is using for counter on tabs
						behaviour.domainIndexDefer.resolve(transformed.domainsIndex);
						$defer.resolve({
							Data: transformed.domains,
							DnsServerType: gridResponse.DnsServerType,
							IsDomainLocked: gridResponse.IsDomainLocked
						});
						expiringSoonService.loadDomainPricesAsync(transformed.domains);
						$defer.promise.then(function(){
							behaviour.asyncStatus(pageHelper.AsyncStatus.Success);
						});
					});
				};

				return gridSettings;
			}

			function transformDomainListForDisplay(sourceDomains, behaviour, cartItems) {
				var currentDomain;
				var domainsIndex = [];
				for (var i = 0; i < sourceDomains.length; i++) {
					currentDomain = sourceDomains[i];
					domainRenew.wrapInBehaviour(currentDomain, behaviour.notifications);
					updateDomainCartState(currentDomain, cartItems);
					domainsIndex.push(currentDomain.DomainName);
				}

				return {
					domains: sourceDomains,
					domainsIndex: domainsIndex
				};
			}

			function updateDomainCartState(domain, cartItems) {
				var cartItem = cartService.getDomainByName(cartItems, domain.DomainName);
				if (cartItem !== null) {
					domain.IsInCart = true;
					domain.CartItemId = cartItem.Id;
					domain.WhoisGuardInfo.IsEnabled = hasDomainProductInCart(domain, cartItems, cartService.itemTypes.WhoisGuard);
					domain.PremiumDnsInfo.IsEnabled = hasDomainProductInCart(domain, cartItems, cartService.itemTypes.PremiumDns);
					domain.behavior.updatePrice();
				} else {
					domain.IsInCart = false;
					domain.CartItemId = null;
				}
			}

			function hasDomainProductInCart(domain, cartItems, productType) {
				var products = cartService.getAllItemsByDomainName(
					cartItems, domain.DomainName, [productType]);
				return products.length > 0;
			}
		}
	}
]);;
app.factory('expiringProductsList', [
	'pageHelper',
	'httpRepository',
	'ncGridParams',
	'domainStatuses',
	'expiringDomainProducts',
	'notificationService',
	'$rootScope',
	'productRenew',
	'$q',
	'$timeout',
	'expiringSoonService',
	function(pageHelper, httpRepository, ncGridParams, domainStatuses, expiringDomainProducts, notificationService, $rootScope, productRenew, $q, $timeout, expiringSoonService) {
		'use strict';

		var GlobalErrorMessages = window.GlobalErrorMessages || {};

		var productInfoTypes = expiringSoonService.productInfoTypes;
		var productsDataHasBeenChanged = 'PRODUCTS_HAS_BEEN_CHANGED';
		$rootScope.HasSymantecCertificate = 0;

		return {
			productTypes: productInfoTypes,
			create: createBehavior
		};

		function createBehavior(domainNamesIndex, initialCartItemsProvider) {
			var eventBus = $rootScope.$new();
			var notifications = new notificationService.instance();
			return new pageHelper.AsyncStateBehavior({
				constructor: function() {
					var instance = this.instance;
					instance.showContent = false;
					instance.showLoadPanel = true;
					instance.operationIsInProgress = false;
					instance.notifications = notifications;
					instance.statusList = domainStatuses.getExpiringStatusFilterValues('Status');
					instance.gridSettings = createGridSettings(instance, domainNamesIndex);
					instance.gridSettings.settings.reload();

					angular.extend(instance, {
						sourceProducts: [],
						destroy: function() {
							eventBus.$destroy();
						},
						showDomainDetails: function(domainName) {
							instance.domainDetails = expiringDomainProducts.create(domainName, productsDataSource.bind(null, instance));
							instance.domainDetails.onDestroy(function() {
								instance.domainDetails = null;
							});
						},
						renewSelectedProducts: function() {
							var selectedProducts = instance.gridSettings.parameters.selection.selectedItems;
							if (selectedProducts.length === 0) {
								instance.notifications.stuckNotifications.addWarning(ExpiringSoonMessages.warning_NoProductsSelectedToAddToCart, {
									hasClose: true,
									autoHide: true
								});
								return $q.when(selectedProducts);
							}

							var selectedNotInCartProducts = selectedProducts.filter(function(product) {
								return !product.IsInCart;
							});

							return expiringSoonService.renewProducts(instance, instance.notifications, selectedNotInCartProducts);
						}
					});
				},
				onLoading: function() {
					this.instance.operationIsInProgress = true;
				},
				onSuccess: function() {
					var instance = this.instance;
					// let browser to process queue after heavy calculations
					$timeout(function() {
						instance.operationIsInProgress = false;
						instance.showContent = true;
						instance.showLoadPanel = false;
					});
				},
				onError: function(params) {
					this.instance.operationIsInProgress = false;
					this.instance.notifications.stuckNotifications.addError(params.msg || GlobalErrorMessages.error_Site_PleaseTryAgain, {
						hasClose: true,
						isAutoHide: true
					});
				}
			});

			function createGridSettings(behavior, domainNamesIndex) {
				var gridSettings = new ncGridParams();
				expiringSoonService.applyCommonGridConfig(gridSettings);
				gridSettings.parameters.search.serchPropertyNames = ['ProductTitle', 'DomainName'];
				gridSettings.settings.ordering.set({
					propertyName: 'ExpirationDateUnix',
					descending: true
				});
				gridSettings.settings.getData = function($defer, ncGridState) {
					$q.all([
						httpRepository.expiringList.getProductsList(ncGridState),
						domainNamesIndex,
						initialCartItemsProvider()
					])
					.then(function(responses) {
						var productsResponse = responses[0];
						var domainsIndex = responses[1];
						var cartItems = responses[2];
						var gridResponse = productsResponse && productsResponse.Result;
						if (!gridResponse || productsResponse.Error) {
							behavior.asyncStatus(pageHelper.AsyncStatus.Error);
							$defer.resolve(null);
							return;
						}

						Array.prototype.push.apply(behavior.sourceProducts, gridResponse.Data);

						for (var index = 0; index < gridResponse.Data.length; index++) {
						    if (gridResponse.Data[index].ProviderName != null) {
						        if (gridResponse.Data[index].ProviderName.toUpperCase() == 'GEOTRUST'
                               || gridResponse.Data[index].ProviderName.toUpperCase() == 'THAWTE'
                               || gridResponse.Data[index].ProviderName.toUpperCase() == 'VERISIGN') {
						            $rootScope.HasSymantecCertificate = 1;
						            break;
						        }
						    }
						}

						var transformedProducts = transformDomainListForDisplay(gridResponse.Data, domainsIndex, cartItems);
						behavior.itemsLength = getCounterNumber(behavior.itemsLength, gridResponse, transformedProducts);
						expiringSoonService.loadProductPricesAsync(transformedProducts);
						$defer.resolve({
							Data: transformedProducts,
							DnsServerType: gridResponse.DnsServerType,
							IsDomainLocked: false
						});
						$defer.promise.then(function() {
							eventBus.$broadcast(productsDataHasBeenChanged);
							behavior.asyncStatus(pageHelper.AsyncStatus.Success);
						});
					});
				};

				return gridSettings;
			}

			function getCounterNumber(currentCount, gridResponse, filteredProducts) {
				var result = currentCount;
				if (!angular.isNumber(result)){
					result = gridResponse.TotalServerItemsCount >= 0 ? gridResponse.TotalServerItemsCount : gridResponse.Data.length;
				}

				return result - (gridResponse.Data.length - filteredProducts.length);
			}

			function productsDataSource(productsBehavior) {
				return {
					getProducts: function() {
						return productsBehavior.gridSettings.parameters.storage.requestData;
					}
				}
			}

			/**
			 *
			 * @param {Object[]} products
			 * @param {string[]} domainIndex
			 * @param {Object[]} cartItems - items which are currently in the shopping cart
			 * @returns {Object[]}
			 */
			function transformDomainListForDisplay(products, domainIndex, cartItems) {
				var filteredProducts = [];
				var i = 0, currentProduct, productWithBehavior;
				for (; i < products.length; i++) {
					currentProduct = products[i];
					productWithBehavior = productRenew.wrapInBehaviour(currentProduct, notifications);
					expiringSoonService.updateProductCartState(cartItems, productWithBehavior);
					if (!productRepresentedOnDomains(currentProduct, domainIndex)) {
						filteredProducts.push(productWithBehavior);
					}
				}

				return filteredProducts;
			}

			function productRepresentedOnDomains(product, domainIndex) {
				return (product.ProductInfoType === productInfoTypes.WhoisGuard
					|| product.ProductInfoType === productInfoTypes.PremiumDns)
					&& domainIndex.indexOf(product.DomainName) > -1
					;
			}
		}
	}
]);;
app.service('expiringSoonService', [
	'cartService',
	'pageHelper',
	'$q',
	'pricing',
	'$filter',
	function(cartService, pageHelper, $q, pricing, $filter) {
		var loadingMsgOpts = {
			isAutoHide: false,
			hasClose: false
		};

		var ExpiringSoonMessages = window.ExpiringSoonMessages || {};

		// The same enum as in NameCheap.Core.Objects.Enums.ProductInfoType
		var productInfoTypes = {
			Onepager: 0,
			SslCertificate: 1,
			PremiumDns: 2,
			WhoisGuard: 3,
			Hosting: 4,
			Servers: 5,
			ProductTypePrivateEmail: 6
		};

		return {
			productInfoTypes: productInfoTypes,

			updateProductCartState: updateProductCartState,

			applyCommonGridConfig: function(gridSettings) {
				gridSettings.parameters.mapping.isLazyLoading = true;
				gridSettings.parameters.mapping.serverChunkSize = 500; // empiric way of measurement has shown this number is good enough
				gridSettings.parameters.pagination.isTopEnabled = true;
				gridSettings.parameters.pagination.isBottomEnabled = true;
			},

			renewProducts: function (pageBehavior, notifications, products) {
				var instance = pageBehavior;
				if (products.length === 0) {
					instance.notifications.stuckNotifications.addWarning(ExpiringSoonMessages.notification_allProductsAreInTheCart, {
						hasClose: true,
						autoHide: true
					});
					return;
				}

				instance.asyncStatus(pageHelper.AsyncStatus.Loading);
				var productsToRenew = products.filter(function(product) {
					return !product.IsInCart;
				});

				return this.renewWithProcessingStatus(productsToRenew, {
					getLoadingMessage: function(processed, total) {
						return $filter('stringFormat')(ExpiringSoonMessages.notification_AddToCartProductsProcessing, [processed, total]);
					},
					setupCancellation: function(cancellation) {
						instance.stopProcessing = cancellation;
					},
					notifications: notifications,
					renewCall: cartService.renewProducts.bind(cartService)
				}).then(function() {
					return cartService.getCartItems();
				}).then(function(cartItems) {
					productsToRenew.forEach(function(product) {
						updateProductCartState(cartItems, product);
					});
					showRenewNotification(notifications.stuckNotifications, productsToRenew, cartItems);
					cartService.notifyCardChanged();
					instance.asyncStatus(pageHelper.AsyncStatus.Success);
				}).catch(function(result) {
					instance.asyncStatus(pageHelper.AsyncStatus.Error, {
						msg: result && result.Msg
					});
				});
			},

			/**
			 *
			 * @param {Object[]} itemsToRenew - products or domains to be renewed
			 * @param {Object} options
			 * @param {Function} options.getLoadingMessage - a callback which has to generate loading message, amount of processed and total length will be passed
			 * @param {Function<IPromise>} options.renewCall - a function to initiate renewal operation
			 * @param {Function} options.setupCancellation - a callback to which will be passed cancellation function (may be called to abort renewal process)
			 * @param {Object} options.notifications - new notificationService.instance()
			 * @returns {IPromise}
			 */
			renewWithProcessingStatus: function(itemsToRenew, options) {
				if (itemsToRenew.length === 0) {
					return $q.when(null);
				}

				var processed = 0;
				var getProcessingMessage = options.getLoadingMessage;
				var operationToCall = options.renewCall;
				var msg, chunkProcessed;
				if (itemsToRenew.length > cartService.maxRenewChunkLength) {
					msg = options.notifications.stuckNotifications.addLoading(getProcessingMessage(processed, itemsToRenew.length), loadingMsgOpts);
					chunkProcessed = function(opts, cancellation) {
						processed += opts.domains.length;
						msg.setNewText(getProcessingMessage(processed, itemsToRenew.length));
						if (angular.isFunction(options.setupCancellation)) {
							options.setupCancellation(cancellation);
						}
					};
				}

				return operationToCall(itemsToRenew, chunkProcessed || angular.noop)
					.then(function(result) {
						if (result && result.Error === true) {
							return $q.reject(result);
						}

						return itemsToRenew;
					}).finally(function() {
						if (msg) {
							msg.destroy();
							msg = null;
						}
					});
			},

			loadDomainPricesAsync: function(allDomains) {
				var domainIndex = {};
				var premiumDomainNames = allDomains.filter(function(domain) {
					return domain.IsPremiumDomain;
				}).map(function (domain) {
					domainIndex[domain.DomainName] = domain;
					return domain.DomainName;
				});

				return pricing.loadPremiumDomainPrices(premiumDomainNames, function(domainName, price) {
					var domain = domainIndex[domainName];

					// as per requirements premium domains cannot have any discount
					domain.Price = {
						RegularPrice: price,
						DiscountPrice: null,
						DiscountDescription: null
					};

					domain.CalculatedPrice = calculateDomainPrice(domain);
				});
			},

			loadProductPricesAsync: function(products) {
				var productsIndex = {};
				var hostings = products.filter(function(product) {
					return product.ProductInfoType === productInfoTypes.Hosting || product.ProductInfoType === productInfoTypes.Servers;
				}).map(function(product) {
					var pid = productId(product);
					productsIndex[pid] = product;
					return pid;
				});
				
				return pricing.loadHostingRenewPrices(hostings, function(hostingId, price) {
					var currentPrice = productsIndex[hostingId].CalculatedPrice;
					currentPrice.Loading = false;
					currentPrice.RegularPrice = price.RegularPrice;
					currentPrice.DiscountPrice = hasDiscount(price) ? price.DiscountPrice : price.RegularPrice;
					currentPrice.DiscountDescription = price.DiscountDescription;
					currentPrice.ShowDiscount = hasDiscount(price);
				});
			},

			bulkState: {
				canRenewPdns: function(domains) {
					return domains.length === 0 || any(domains, function(domain) {
						return isRenewable(domain.PremiumDnsInfo)
					});
				},
				canRenewWg: function(domains) {
					return domains.length === 0 || any(domains, function(domain) {
						return isRenewable(domain.WhoisGuardInfo);
					});
				},
				canTurnOffPdns: function(domains) {
					return domains.length === 0 || any(domains, function(domain) {
						return isWaitingForRenew(domain.PremiumDnsInfo);
					});
				},
				canTurnOffWg: function(domains) {
					return domains.length === 0 || any(domains, function(domain) {
						return isWaitingForRenew(domain.WhoisGuardInfo);
					});
				}
			},

			pricing: {
				calculateProductPrice: calculateProductPrice,
				calculateDomainPrice: calculateDomainPrice
			}
		};

		function updateProductCartState(cartItems, product) {
			var productInCart = cartService.getProductById(cartItems, product.ProductId);
			product.IsInCart = productInCart != null;
		}

		function showRenewNotification(stuckNotifications, expectedAddedToCartProducts, cartItems) {
			var productsAddedToCart = expectedAddedToCartProducts.filter(function(product) {
				return cartService.getProductById(cartItems, product.ProductId) != null;
			});

			var difference = expectedAddedToCartProducts.length - productsAddedToCart.length;
			if (difference === 0) {
				stuckNotifications.addSuccess(ExpiringSoonMessages.notification_ProductsAddingToCartSuccess, {
					hasClose: true,
					isAutoHide: true
				});

				return;
			}

			var warning = $filter('stringFormat')(ExpiringSoonMessages.notifications_ProductsHasNotBeenAddedWarning, [difference]);
			stuckNotifications.addWarning(warning, {
				hasClose: true,
				isAutoHide: true
			})
		}


		function isWaitingForRenew(product){
			return product && product.IsExist && product.IsEnabled;
		}

		function isRenewable(product) {
			return product && product.IsExist && !product.IsEnabled;
		}

		function any(items, predicate) {
			for (var i = 0; i < items.length; i++){
				if (predicate(items[i])) {
					return true;
				}
			}

			return false;
		}

		function calculateProductPrice(product) {
			var price = product.Price;
			return {
				DiscountDescription: price.DiscountDescription,
				DiscountPrice: getPriceWithDiscount(price),
				ShowDiscount: hasDiscount(price),
				RegularPrice: price.RegularPrice,
				Loading: price.RegularPrice === 0
			}
		}

		function getPriceWithDiscount(price) {
			return price.DiscountPrice || price.RegularPrice;
		}

		function calculateDomainPrice(domain) {
			var discountPrice = getDomainDiscountPrice(domain);
			var regularPrice = domain.Price.RegularPrice + getProductRegularPrice(domain.PremiumDnsInfo) + getProductRegularPrice(domain.WhoisGuardInfo);
			return {
				DiscountDescription: domain.Price.DiscountDescription,
				DiscountPrice: discountPrice,
				ShowDiscount: domainHasDiscount(domain) && discountPrice !== regularPrice,
				RegularPrice: regularPrice
			}
		}

		function getDomainDiscountPrice(domain) {
			return getPriceWithDiscount(domain.Price)
				+ getProductPriceWithDiscount(domain.WhoisGuardInfo)
				+ getProductPriceWithDiscount(domain.PremiumDnsInfo);
		}

		function domainHasDiscount(domain) {
			return hasDiscount(domain.Price)
				|| hasDiscount(domain.PremiumDnsInfo.Price)
				|| hasDiscount(domain.WhoisGuardInfo.Price)
				;
		}

		function hasDiscount(price) {
			return price && price.DiscountPrice != null && price.DiscountPrice !== price.RegularPrice;
		}

		function getProductRegularPrice(productInfo) {
			if (!productInfo || !productInfo.IsExist || !productInfo.IsEnabled) {
				return 0;
			}

			return productInfo.Price.RegularPrice;
		}

		function getProductPriceWithDiscount(productInfo) {
			if (!productInfo) {
				return 0;
			}

			var price = productInfo.Price;
			var shouldAddAdditionalPrice = productInfo.IsExist && productInfo.IsEnabled && price != null;
			if (!shouldAddAdditionalPrice) {
				return 0;
			}

			if (price.DiscountPrice) {
				return price.DiscountPrice;
			}

			return price.RegularPrice;
		}

		function productId(product) {
			return product.ProductId;
		}
	}
]);;
(function () {
	app.factory('productRenew', [
		'pageHelper',
		'cartService',
		'expiringSoonService',
		'domainStatuses',
		'$q',
		function (pageHelper, cartService, expiringSoonService, domainStatuses, $q) {
			var GlobalErrorMessages = window.GlobalErrorMessages || {};
			var ExpiringSoonMessages = window.ExpiringSoonMessages || {};
			var unexpectedError = GlobalErrorMessages.error_Site_PleaseTryAgain;

			return {
				wrapInBehaviour: function (product, notifications) {
					product.Status = domainStatuses.getIconFromStatusEnum(product.Status);
					product.CalculatedPrice = expiringSoonService.pricing.calculateProductPrice(product);
					product.ExpirationDateUnix = new Date(product.ExpirationDate).getTime();
					product.behavior = getBehaviour(product, notifications);
					return product;
				}
			};

			function getBehaviour(product, notifications) {
				return new pageHelper.AsyncStateBehavior({
					constructor: function () {
						var instance = this.instance;
						angular.extend(instance, {
							renewProduct: function () {
								instance.asyncStatus(pageHelper.AsyncStatus.Loading);
								return cartService.renewProduct(product)
									.then(function (result) {
										if (result && result.Error === true) {
											instance.asyncStatus(pageHelper.AsyncStatus.Error, {msg: result.Msg});
											return $q.reject(result.Msg);
										}
									}).then(function() {
										return cartService.getCartItems();
									}).then(function(cartItems) {
										expiringSoonService.updateProductCartState(cartItems, product);
										if (product.IsInCart) {
											cartService.notifyCardChanged();
											instance.asyncStatus(pageHelper.AsyncStatus.Success);
										} else {
											instance.asyncStatus(pageHelper.AsyncStatus.Error);
										}
									});
							}
						});
					},
					onLoading: function () {
						this.instance.loading = true;
					},
					onSuccess: function () {
						this.instance.loading = false;
					},
					onActive: function() {
						this.instance.loading = false;
					},
					onError: function (params) {
						this.instance.loading = false;
						notifications.stuckNotifications.addError(params.msg || unexpectedError, {
							hasClose: true,
							isAutoHide: true
						});
					}
				});
			}

		}
	]);
})();;
