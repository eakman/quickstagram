app.directive('ncDomainPrice', function () {
	return {
		restrict: 'EA',
		scope: {
			price: '='
		},
		template: '<p ng-show="!price.Loading && price.ShowDiscount"> \
						{{price.DiscountPrice | currency : "$" : 2 }}\
						<s>{{price.RegularPrice | currency : "$" : 2 }}</s>\
					</p>\
					<p ng-hide="price.Loading || price.ShowDiscount">\
						{{price.RegularPrice | currency : "$" : 2 }}\
					</p>',
		link: function(scope, element) {
			scope.$watch('price.Loading', function(isLoading) {
				if (isLoading != null) {
					element.toggleClass('async-processing', isLoading);
				}
			});
		}
	}
});;
