            });

        },
        onSuccess: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;
        },
        onLoading: function (params) {
            var instance = this.instance;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });


    function createGridItemBehavior(item, pageBehavior) {
        return new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                instance.model = item;
                function takeDecimal(value)
                { return (value < 10) ? "0" + value : value; }

                //model.IsRead, model.IsSaved
                if (instance.model.IsRead == true)
                    instance.model.MessageState = 0;
                else
                    instance.model.MessageState = 1;
                if (instance.model.IsSaved)
                    instance.model.MessageState = 2;

                instance.model.CreatedDate = pageHelper.Date.dateFromJson(instance.model.CreatedDate);
                instance.model.DateDisplay = pageHelper.Date.toLocaleDate(instance.model.CreatedDate);
                instance.model.DateSortValue = '' + instance.model.CreatedDate.getFullYear() + instance.model.CreatedDate.getMonth() + instance.model.CreatedDate.getDate() +
                    takeDecimal(instance.model.CreatedDate.getHours()) + takeDecimal(instance.model.CreatedDate.getMinutes()) + takeDecimal(instance.model.CreatedDate.getSeconds());

                instance.asyncStatus(pageHelper.AsyncStatus.Success);
            },
            onSuccess: function (params) {
                var instance = this.instance;

                instance.asyncStatus(pageHelper.AsyncStatus.Active);
            },
            onActive: function (params) {
                var instance = this.instance;
                instance.showLoadPanel = false;
                instance.showContent = true;

            },
            onLoading: function (params) {
                var instance = this.instance;
            },
            onLocked: function (params) {
                var instance = this.instance;
            },
            onError: function (params) {
                var instance = this.instance;
                instance.showLoadPanel = false;
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
        });
    }

}]);;
app.controller('domainBulkEmailRedirectActionCtrl', ['$scope', '$rootScope', '$modalInstance', 'httpRepository', '$filter', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'domainName', 'mailBoxName','mailBoxId', 'forwardTo','action','title','index',
function ($scope, $rootScope, $modalInstance, httpRepository, $filter, notificationService, pageHelper, $q, ncGridParams, $sce, domainName, mailBoxName, mailBoxId, forwardTo, action,title,index) {
    $scope.cancelClick = function () {
        $modalInstance.close('');
    };
    $scope.title = title;
    $scope.index = index;
    $scope.DomainParams = [];
    $scope.oldDestination = forwardTo;
    $scope.oldMailBoxName = mailBoxName;
    $scope.domainName = domainName;
    $scope.mailBoxId = mailBoxId;
    $scope.forwardTo = forwardTo;
    $scope.mailBoxName = mailBoxName;
    $scope.action = action;
    $scope.MailBoxNameValidity = false;
    $scope.DestinationEmailValidity = false;
    $scope.MailBoxName_RequiredValidity = false;
    $scope.DestinationEmail_RequiredValidity = false;

    $scope.SaveChanges = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.onClick = function () {

                if ($scope.mailBoxName.trim() == '')
                {
                    $scope.MailBoxName_RequiredValidity = true;
                }
                else
                {
                    $scope.MailBoxName_RequiredValidity = false;
                }

                if ($scope.forwardTo.trim() == '')
                {
                    $scope.DestinationEmail_RequiredValidity = true;
                }
                else
                {
                    $scope.DestinationEmail_RequiredValidity = false;
                }

                if ($scope.action == 'add' && $scope.mailBoxName.trim() != '' && $scope.forwardTo.trim() != '' && !$scope.DestinationEmailValidity && !$scope.MailBoxNameValidity)
                {
                    //$scope.ShowPostLoader();
                    $scope.DomainParams = { Call: "Success", SameEntryFlag: '', domainName: $scope.domainName, mailBoxId: $scope.mailBoxId, forwardTo: $scope.forwardTo, mailBoxName: $scope.mailBoxName, oldMailBoxName: $scope.oldMailBoxName, oldDestination: $scope.oldDestination, index: $scope.index };
                    $modalInstance.close($scope.DomainParams);
                }
                else if ($scope.action == 'edit' && $scope.mailBoxName.trim() != '' && $scope.forwardTo.trim() != '' && !$scope.DestinationEmailValidity && !$scope.MailBoxNameValidity)
                {
                    if (($scope.oldDestination.replace(/ /g, '') != $scope.forwardTo.replace(/ /g, '')) || ($scope.oldMailBoxName.replace(/ /g, '') != $scope.mailBoxName.replace(/ /g, '')))
                    {
                        //$scope.ShowPostLoader();
                        $scope.DomainParams = { Call: "Success", SameEntryFlag: '', domainName: $scope.domainName, mailBoxId: $scope.mailBoxId, forwardTo: $scope.forwardTo, mailBoxName: $scope.mailBoxName, oldMailBoxName: $scope.oldMailBoxName, oldDestination: $scope.oldDestination, index: $scope.index };
                        $modalInstance.close($scope.DomainParams);
                    }
                    else
                    {
                        $scope.DomainParams = { Call: "Error", SameEntryFlag: 'SameEntry', domainName: $scope.domainName, mailBoxId: $scope.mailBoxId, forwardTo: $scope.forwardTo, mailBoxName: $scope.mailBoxName, index: $scope.index };
                        $modalInstance.close($scope.DomainParams);
                    }
                }
            }
        }
    })

    var nc_Val_MailBoxName = /^[0-9A-Za-z-_.]+$/;//digits,letters,dot,minus and underscore

    $scope.$watch('mailBoxName', function (newVal, oldVal) {
            if (newVal != oldVal) {
                if (newVal.trim() == '') {
                    $scope.MailBoxName_RequiredValidity = true;
                    $scope.MailBoxNameValidity = false;
                }
                else {
                    $scope.MailBoxName_RequiredValidity = false;
                }
                if (newVal != '') {
                    if (!nc_Val_MailBoxName.test(newVal)) {
                        $scope.MailBoxNameValidity = true;
                        $scope.MailBoxName_RequiredValidity = false;

                    }
                    else {
                        $scope.MailBoxNameValidity = false;
                    }
                }
            }
    }, true);

    $scope.$watch('forwardTo', function (newVal, oldVal) {
         if (newVal != oldVal) {
                if (newVal.trim() == '') {
                    $scope.DestinationEmail_RequiredValidity = true;
                    $scope.DestinationEmailValidity = false;
                }
                else {
                    $scope.DestinationEmail_RequiredValidity = false;
                }
                if (newVal != '') {
                    if (!$scope.ValidateEmail(newVal)) {
                        $scope.DestinationEmailValidity = true;
                        $scope.DestinationEmail_RequiredValidity = false;
                    }
                    else {
                        $scope.DestinationEmailValidity = false;
                    }
                }
            }
    }, true);

    $scope.ValidateEmail = function (emailValue) {
        var emailPattern = nc_Val_EmailPatternForAddForwarder;
        var errCount = 0;
        var isValidTld = true;
        var emailExtension = emailValue.split("@")[1];
        if (emailExtension != undefined) {
            var dotIndex = emailExtension.indexOf('.');
            if (dotIndex != -1) {
                var emailTLD = emailExtension.substr(dotIndex + 1, emailExtension.length - dotIndex)
                var tldPattern = nc_Val_AlphaAndDot;
                if (emailTLD != "") {
                    if (emailTLD.match(tldPattern)) {
                        isValidTld = true;
                    }
                    else {
                        isValidTld = false;
                    }
                }
            }
        }
        if (emailValue != undefined) {
            if (emailPattern.test(emailValue.trim()) == false || !isValidTld) {
                errCount = errCount + 1;
            }
        }

        if (errCount == 0)
            return true;
        else
            return false;

    }

    $scope.ShowPostLoader = function () {
        $('.opac').delay(25).queue(function () {
            $(this).addClass('page-load').css({ 'text-align': 'left', 'padding': '0em', 'opacity': '0.5', 'background-position': 'center 2.5em' });
        });
    }
}]);;
app.controller('domainBulkEmailRedirectActionforCatchAllCtrl', ['$scope', '$rootScope', '$modalInstance', 'httpRepository', '$filter', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'domainName', 'mailBoxName', 'mailBoxId', 'forwardTo', 'action','title','index',
function ($scope, $rootScope, $modalInstance, httpRepository, $filter, notificationService, pageHelper, $q, ncGridParams, $sce, domainName, mailBoxName, mailBoxId, forwardTo, action,title,index) {
    $scope.cancelClick = function () {
        $modalInstance.close('');
    };
    $scope.title = title;
    $scope.index = index;
    $scope.DomainParams = [];
    $scope.oldDestination = forwardTo;
    $scope.oldMailBoxName = mailBoxName;
    $scope.domainName = domainName;
    $scope.mailBoxId = mailBoxId;
    $scope.forwardTo = forwardTo;
    $scope.mailBoxName = mailBoxName;
    $scope.action = action;
    $scope.DestinationEmailValidity = false;
    $scope.DestinationEmail_RequiredValidity = false;

    $scope.SaveChanges = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.onClick = function () {

                if ($scope.forwardTo.trim() == '')
                {
                    $scope.DestinationEmail_RequiredValidity = true;
                }
                else
                {
                    $scope.DestinationEmail_RequiredValidity = false;
                }

                if ($scope.action == 'add' && $scope.forwardTo.trim() != '' && !$scope.DestinationEmailValidity)
                {
                    //$scope.ShowPostLoader();

                    if ($scope.forwardTo.charAt($scope.forwardTo.length - 1) == ',') {
                        $scope.forwardTo = $scope.forwardTo.substr(0, $scope.forwardTo.length - 1);
                    }

                    $scope.DomainParams = { Call: "Success", SameEntryFlag: '', domainName: $scope.domainName, mailBoxId: $scope.mailBoxId, forwardTo: $scope.forwardTo, mailBoxName: '*', oldMailBoxName: $scope.oldMailBoxName, oldDestination: $scope.oldDestination, index: $scope.index };
                    $modalInstance.close($scope.DomainParams);
                }
                else if ($scope.action == 'edit' && $scope.forwardTo.trim() != '' && !$scope.DestinationEmailValidity)
                {
                    if ($scope.oldDestination.replace(/ /g, '') != $scope.forwardTo.replace(/ /g, ''))
                    {
                        //$scope.ShowPostLoader();

                        if ($scope.forwardTo.charAt($scope.forwardTo.length - 1) == ',') {
                            $scope.forwardTo = $scope.forwardTo.substr(0, $scope.forwardTo.length - 1);
                        }

                        $scope.DomainParams = { Call: "Success", SameEntryFlag: '', domainName: $scope.domainName, mailBoxId: $scope.mailBoxId, forwardTo: $scope.forwardTo, mailBoxName: '*', oldMailBoxName: $scope.oldMailBoxName, oldDestination: $scope.oldDestination, index: $scope.index };
                        $modalInstance.close($scope.DomainParams);
                    }
                    else
                    {
                        $scope.DomainParams = { Call: "Error", SameEntryFlag: 'SameEntry', domainName: $scope.domainName, mailBoxId: $scope.mailBoxId, forwardTo: $scope.forwardTo, mailBoxName: '*', index: $scope.index };
                        $modalInstance.close($scope.DomainParams);
                    }
                }
            }
        }
    })

    $scope.$watch('forwardTo', function (newVal, oldVal) {
        if (newVal != oldVal) {
            if (newVal.trim() == '') {
                $scope.DestinationEmail_RequiredValidity = true;
                $scope.DestinationEmailValidity = false;
            }
            else {
                $scope.DestinationEmail_RequiredValidity = false;
            }
            if (newVal != '') {
               if (!$scope.ValidateEmail(newVal)) {
                    $scope.DestinationEmailValidity = true;
                    $scope.DestinationEmail_RequiredValidity = false;
                }
                else {
                    $scope.DestinationEmailValidity = false;
                }
            }
        }
    }, true);

    $scope.ValidateEmail = function (emailValue) {
        var emailPattern = nc_Val_EmailPatternForAddForwarder;
        var errCount = 0;
        var isValidTld = true;
        var emailExtension = emailValue.split("@")[1];
        if (emailExtension != undefined) {
            var dotIndex = emailExtension.indexOf('.');
            if (dotIndex != -1) {
                var emailTLD = emailExtension.substr(dotIndex + 1, emailExtension.length - dotIndex)
                var tldPattern = nc_Val_AlphaAndDot;
                if (emailTLD != "") {
                    if (emailTLD.match(tldPattern)) {
                        isValidTld = true;
                    }
                    else {
                        isValidTld = false;
                    }
                }
            }
        }
        if (emailValue != undefined) {
            if (emailPattern.test(emailValue.trim()) == false || !isValidTld) {
                errCount = errCount + 1;
            }
        }

        if (errCount == 0)
            return true;
        else
            return false;

    }

    $scope.ShowPostLoader = function () {
        $('.opac').delay(25).queue(function () {
            $(this).addClass('page-load').css({ 'text-align': 'left', 'padding': '0em', 'opacity': '0.5', 'background-position': 'center 2.5em' });
        });
    }

}]);;
app.controller('domainEmailRedirectActionCtrl', ['$scope', '$rootScope', '$modalInstance', 'httpRepository', '$filter', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'domainName', 'mailBoxName','mailBoxId', 'forwardTo','action','title','index',
function ($scope, $rootScope, $modalInstance, httpRepository, $filter, notificationService, pageHelper, $q, ncGridParams, $sce, domainName, mailBoxName, mailBoxId, forwardTo, action,title,index) {
    $scope.cancelClick = function () {
        $modalInstance.close('');
    };
    $scope.title = title;
    $scope.index = index;
    $scope.DomainParams = [];
    $scope.oldDestination = forwardTo;
    $scope.oldMailBoxName = mailBoxName;
    $scope.domainName = domainName;
    $scope.mailBoxId = mailBoxId;
    $scope.forwardTo = forwardTo;
    $scope.mailBoxName = mailBoxName;
    $scope.action = action;
    $scope.MailBoxNameValidity = false;
    $scope.DestinationEmailValidity = false;
    $scope.MailBoxName_RequiredValidity = false;
    $scope.DestinationEmail_RequiredValidity = false;
    
    $scope.SaveChanges = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.onClick = function () {
                if ($scope.mailBoxName.trim() == '') {
                    $scope.MailBoxName_RequiredValidity = true;
                }
                else {
                    $scope.MailBoxName_RequiredValidity = false;
                }
                if ($scope.forwardTo.trim() == '') {
                    $scope.DestinationEmail_RequiredValidity = true;
                }
                else {
                    $scope.DestinationEmail_RequiredValidity = false;
                }
              if ($scope.action == 'add' && $scope.mailBoxName.trim() != '' && $scope.forwardTo.trim() != '' && !$scope.DestinationEmailValidity && !$scope.MailBoxNameValidity) {
                    $scope.ShowPostLoader();
                    httpRepository.emailRedirect.addForwarder($scope.domainName, $scope.mailBoxName.replace(/ /g, ''), $scope.forwardTo.replace(/ /g, '')).then(function (result) {
                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                    });
                }
                else if ($scope.action == 'edit' && $scope.mailBoxName.trim() != '' && $scope.forwardTo.trim() != '' && !$scope.DestinationEmailValidity && !$scope.MailBoxNameValidity) { 
                    if (($scope.oldDestination.replace(/ /g, '') != $scope.forwardTo.replace(/ /g, '')) || ($scope.oldMailBoxName.replace(/ /g, '') != $scope.mailBoxName.replace(/ /g, ''))) {
                        $scope.ShowPostLoader();
                        httpRepository.emailRedirect.editForwarder($scope.domainName, $scope.mailBoxId, $scope.mailBoxName.replace(/ /g, ''), $scope.forwardTo.replace(/ /g, ''), $scope.oldMailBoxName.replace(/ /g, ''), $scope.oldDestination.replace(/ /g, '')).then(function (result) {
                            instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                        });
                    }
                    else {
                        $scope.DomainParams = { Call: "Error", SameEntryFlag: 'SameEntry', domainName: $scope.domainName, mailBoxId: $scope.mailBoxId, forwardTo: $scope.forwardTo, mailBoxName: $scope.mailBoxName, index: $scope.index,errMesg:'' };
                        $modalInstance.close($scope.DomainParams);
                    }
                }
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            if (params.Msg!='NORIGHTS') {
                $scope.DomainParams = { Call: "Success", SameEntryFlag: '', domainName: $scope.domainName, mailBoxId: $scope.mailBoxId, forwardTo: $scope.forwardTo, mailBoxName: $scope.mailBoxName, oldMailBoxName: $scope.oldMailBoxName, oldDestination: $scope.oldDestination, index: $scope.index, errMesg: '' };
                $modalInstance.close($scope.DomainParams);
            }
            else {
                $modalInstance.close(params.Msg);
            }
        },
        onActive: function () {

        },
        onError: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            $scope.DomainParams = { Call: "Error", SameEntryFlag: '', domainName: $scope.domainName, mailBoxId: $scope.mailBoxId, forwardTo: $scope.forwardTo, mailBoxName: $scope.mailBoxName, oldMailBoxName: $scope.oldMailBoxName, oldDestination: $scope.oldDestination, index: $scope.index, errMesg: params.Msg };
            $modalInstance.close($scope.DomainParams);
        }

    })
    var nc_Val_MailBoxName = /^[0-9A-Za-z-_.]+$/;//digits,letters,dot,minus and underscore
    $scope.$watch('mailBoxName', function (newVal, oldVal) {
            if (newVal != oldVal) {
                if (newVal.trim() == '') {
                    $scope.MailBoxName_RequiredValidity = true;
                    $scope.MailBoxNameValidity = false;
                }
                else {
                    $scope.MailBoxName_RequiredValidity = false;
                }
                if (newVal != '') {
                    if (!nc_Val_MailBoxName.test(newVal)) {
                        $scope.MailBoxNameValidity = true;
                        $scope.MailBoxName_RequiredValidity = false;

                    }
                    else {
                        $scope.MailBoxNameValidity = false;
                    }
                }
            }
    }, true);

    $scope.$watch('forwardTo', function (newVal, oldVal) {
           if (newVal != oldVal) {
                if (newVal.trim() == '') {
                    $scope.DestinationEmail_RequiredValidity = true;
                    $scope.DestinationEmailValidity = false;
                }
                else {
                    $scope.DestinationEmail_RequiredValidity = false;
                }
                if (newVal != '') {
                    if (!$scope.ValidateEmail(newVal)) {
                            $scope.DestinationEmailValidity = true;
                            $scope.DestinationEmail_RequiredValidity = false;
                      }
                      else {
                            $scope.DestinationEmailValidity = false;
                      }
                   }
                }
    }, true);


    $scope.ValidateEmail = function (emailValue) {
        var emailPattern = nc_Val_EmailPatternForAddForwarder;
        var errCount = 0;
        var isValidTld = true;
        var emailExtension = emailValue.split("@")[1];
        if (emailExtension != undefined) {
            var dotIndex = emailExtension.indexOf('.');
            if (dotIndex != -1) {
                var emailTLD = emailExtension.substr(dotIndex + 1, emailExtension.length - dotIndex)
                var tldPattern = nc_Val_AlphaAndDot;
                if (emailTLD != "") {
                    if (emailTLD.match(tldPattern)) {
                        isValidTld = true;
                    }
                    else {
                        isValidTld = false;
                    }
                }
            }
        }
        if (emailValue != undefined) {
            if (emailPattern.test(emailValue.trim()) == false || !isValidTld) {
                errCount = errCount + 1;
            }
        }

        if (errCount == 0)
            return true;
        else
            return false;

    }

    $scope.ShowPostLoader = function () {
        $('.opac').delay(25).queue(function () {
            $(this).addClass('page-load').css({ 'text-align': 'left', 'padding': '0em', 'opacity': '0.5', 'background-position': 'center 2.5em' });
        });
    }
}]);

;
app.controller('domainEmailRedirectActionforCatchAllCtrl', ['$scope', '$rootScope', '$modalInstance', 'httpRepository', '$filter', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'domainName', 'mailBoxName', 'mailBoxId', 'forwardTo', 'action','title','index',
function ($scope, $rootScope, $modalInstance, httpRepository, $filter, notificationService, pageHelper, $q, ncGridParams, $sce, domainName, mailBoxName, mailBoxId, forwardTo, action,title,index) {
    $scope.cancelClick = function () {
        $modalInstance.close('');
    };
    $scope.title = title;
    $scope.index = index;
    $scope.DomainParams = [];
    $scope.oldDestination = forwardTo;
    $scope.oldMailBoxName = mailBoxName;
    $scope.domainName = domainName;
    $scope.mailBoxId = mailBoxId;
    $scope.forwardTo = forwardTo;
    $scope.mailBoxName = mailBoxName;
    $scope.action = action;
    $scope.DestinationEmailValidity = false;
    $scope.DestinationEmail_RequiredValidity = false;
    $scope.SaveChanges = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.onClick = function () {
                if ($scope.forwardTo.trim() == '') {
                    $scope.DestinationEmail_RequiredValidity = true;
                }
                else {
                    $scope.DestinationEmail_RequiredValidity = false;
                }
                if ($scope.action == 'add' && $scope.forwardTo.trim() != '' && !$scope.DestinationEmailValidity) {
                    $scope.ShowPostLoader();

                    if ($scope.forwardTo.charAt($scope.forwardTo.length - 1) == ',') {
                        $scope.forwardTo = $scope.forwardTo.substr(0, $scope.forwardTo.length - 1);
                    }
                    httpRepository.emailRedirect.addForwarder($scope.domainName, $scope.mailBoxName.replace(/ /g, ''), $scope.forwardTo.replace(/ /g, '')).then(function (result) {
                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                    });
                }
                else if ($scope.action == 'edit' && $scope.forwardTo.trim() != '' && !$scope.DestinationEmailValidity ) {
                    if ($scope.oldDestination.replace(/ /g, '') != $scope.forwardTo.replace(/ /g, '')) {
                        $scope.ShowPostLoader();

                    if ($scope.forwardTo.charAt($scope.forwardTo.length - 1) == ',') {
                        $scope.forwardTo = $scope.forwardTo.substr(0, $scope.forwardTo.length - 1);
                    }
                    httpRepository.emailRedirect.editForwarder($scope.domainName, $scope.mailBoxId, $scope.mailBoxName.replace(/ /g, ''), $scope.forwardTo.replace(/ /g, ''), $scope.oldMailBoxName.replace(/ /g, ''), $scope.oldDestination.replace(/ /g, '')).then(function (result) {
                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                    });
                }
                else{
                        $scope.DomainParams = { Call: "Error", SameEntryFlag: 'SameEntry', domainName: $scope.domainName, mailBoxId: $scope.mailBoxId, forwardTo: $scope.forwardTo, mailBoxName: '*', index: $scope.index, errMesg: '' };
                    $modalInstance.close($scope.DomainParams);
                }
                }
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            $scope.DomainParams = { Call: "Success", SameEntryFlag: '', domainName: $scope.domainName, mailBoxId: $scope.mailBoxId, forwardTo: $scope.forwardTo, mailBoxName: '*', oldMailBoxName: $scope.oldMailBoxName, oldDestination: $scope.oldDestination, index: $scope.index, errMesg: '' };
            $modalInstance.close($scope.DomainParams);
        },
        onActive: function () {

        },
        onError: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            $scope.DomainParams = { Call: "Error", SameEntryFlag: '', domainName: $scope.domainName, mailBoxId: $scope.mailBoxId, forwardTo: $scope.forwardTo, mailBoxName: '*', oldMailBoxName: $scope.oldMailBoxName, oldDestination: $scope.oldDestination, index: $scope.index, errMesg: params.Msg };
            $modalInstance.close($scope.DomainParams);
        }

    })
   

    $scope.$watch('forwardTo', function (newVal, oldVal) {
         if (newVal != oldVal) {
            var a = newVal.trim().split(",") // Delimiter is a string
            for (var i = 0; i < a.length; i++) {
                if (a[i].trim() != '') {
                    if (!$scope.ValidateEmail(a[i].trim())) {
                        $scope.DestinationEmailValidity = true;
                        $scope.DestinationEmail_RequiredValidity = false;
                        break;
                    }
                    else {
                        $scope.DestinationEmailValidity = false;
                    }
                }
            }
            if (newVal.trim() == '') {
                $scope.DestinationEmail_RequiredValidity = true;
                $scope.DestinationEmailValidity = false;
            }
            else {
                $scope.DestinationEmail_RequiredValidity = false;
            }
        }
    }, true);

  $scope.ValidateEmail = function (emailValue) {
        var emailPattern = nc_Val_EmailPatternForAddForwarder;
        var errCount = 0;
        var isValidTld = true;
        var emailExtension = emailValue.split("@")[1];
        if (emailExtension != undefined) {
            var dotIndex = emailExtension.indexOf('.');
            if (dotIndex != -1) {
                var emailTLD = emailExtension.substr(dotIndex + 1, emailExtension.length - dotIndex)
                var tldPattern = nc_Val_AlphaAndDot;
                if (emailTLD != "") {
                    if (emailTLD.match(tldPattern)) {
                        isValidTld = true;
                    }
                    else {
                        isValidTld = false;
                    }
                }
            }
        }
        if (emailValue != undefined) {
            if (emailPattern.test(emailValue.trim()) == false || !isValidTld) {
                errCount = errCount + 1;
            }
        }

        if (errCount == 0)
            return true;
        else
            return false;

    }

    $scope.ShowPostLoader = function () {
        $('.opac').delay(25).queue(function () {
            $(this).addClass('page-load').css({ 'text-align': 'left', 'padding': '0em', 'opacity': '0.5', 'background-position': 'center 2.5em' });
        });
    }



       



}]);;
app.controller('domainEmailRedirectCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', '$location', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'ncGridEventNames',
function ($scope, $rootScope, httpRepository, $filter, $modal, $location, notificationService, pageHelper, $q, ncGridParams, $sce, ncGridEventNames) {          

    //Resource file reference
    $scope.DomainsInfo = DomainInfoRes;    

    //Scope Variables
    $scope.pageHelper = pageHelper;
    $scope.pageNotification = new notificationService.instance();
    $scope.domainEmailRedirectnotificationAlertArguments = { hasClose: true, isAutoHide: true };
    $scope.UrlSplits = $location.absUrl().split('/');
    $scope.domainName = $scope.UrlSplits[$scope.UrlSplits.length - 2];
    $scope.pageFrom = $scope.UrlSplits[$scope.UrlSplits.length - 1];
    $scope.SelectedDomainNames = '';
    $scope.SelectedmailBoxNames = '';
    $scope.SelectedmailBoxIds = '';
    $scope.UsedForwarders = 0;
    $scope.AvailableForwarders = 0;   
    $scope.CatchAllFlag = false;
    $scope.HideSelectAllCheckBox = false;
    $scope.Used = 0;
    $scope.Total = 0;
    $scope.HideHorizontalLine = false;
    $scope.ShowCatchAllButton = false;

    // Loading Redirect Email Forwarders List
    $scope.pageBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.showLoadPanel = true;
            instance.showContent = false;

            instance.model = null;

            instance.pageNgGridSettings = new ncGridParams();
            instance.pageNgGridSettings.parameters.search.serchPropertyNames = ['MailboxName', 'ForwardTo'];

            instance.pageNgGridSettings.settings.getData = function ($defer, ncGridState) {

                instance.filterStatusPropertyNames = [];
                instance.filterFlagsPropertyNames = [];

                httpRepository.emailRedirect.getEmailForwarders(ncGridState, $scope.domainName).then(function (result) {

                    var dataLength = 0;

                    instance.DNSProviderType = result.Result.DNSProviderType;

                    if (instance.DNSProviderType.toUpperCase() == 'CUSTOM') {
                        window.location.href = '/Domains/DomainList/';
                        return false;
                    }
                    else {
                        instance.UsedForwarders = result.Result.UsedForwarders;
                        instance.AvailableForwarders = result.Result.AvailableForwarders;
                        instance.RegularsForwarders = result.Result.RegularsForwarders;
                        instance.CatchAllForwarders = result.Result.CatchAllForwarders;
                        instance.DomainName = result.Result.DomainName;

                        $scope.UsedForwarders = result.Result.UsedForwarders;
                        $scope.AvailableForwarders = result.Result.AvailableForwarders;

                        instance.ShowActionButtons = (result.Result.UsedForwarders < result.Result.AvailableForwarders);
                        instance.ShowCatchAll = (result.Result.CatchAllForwarders < 1);

                        $scope.CatchAllFlag = (result.Result.CatchAllForwarders < 1) ? false : true;

                        $scope.ShowCatchAllButton = (result.Result.CatchAllForwarders > 0) ? false : true;

                        $scope.HideSelectAllCheckBox = (result.Result.UsedForwarders < 2);

                        if (instance.UsedForwarders == 0 || instance.UsedForwarders > 1)
                        {
                            $scope.HideHorizontalLine = true;

                            if (instance.CatchAllForwarders > 1 && instance.RegularsForwarders < 1)
                            {
                                $scope.HideHorizontalLine = false;
                            }
                        }

                        if (instance.DNSProviderType == 'Free DNS') {
                            $scope.pageNotification.alerts.addWarning($scope.DomainsInfo.site_Alert_ForUsingFreeDns +
                                ' <a href="/Domains/DomainControlPanel/' + $scope.domainName + '/advancedns">Manage DNS ></a>', { hasClose: true, isAutoHide: false });
                        }

                        if (result.Result != null && result.Result.Data != null) {
                            if (result.Msg != '' && result.Msg != null && result.Msg != undefined) {
                                $scope.pageNotification.stuckNotifications.addSuccess(result.Msg, $scope.domainEmailRedirectnotificationAlertArguments);
                            }

                            dataLength = result.Result.Data.length;

                            for (var i = 0; i < dataLength; i++) {
                                result.Result.Data[i].chbId = "chbId" + i;
                            }

                            instance.pageNgGridSettings.parameters.mapping.isLazyLoading = instance.pageNgGridSettings.parameters.mapping.serverChunkSize <= result.Result.Data.length;

                            $defer.resolve(result.Result);

                            instance.model = instance.pageNgGridSettings.parameters.storage.requestData;

                            $scope.updateListTitle($scope.UsedForwarders, $scope.AvailableForwarders);
                        }
                        else {
                            $scope.pageNotification.stuckNotifications.addError(result.Msg, $scope.domainEmailRedirectnotificationAlertArguments);
                        }
                    }
                });
            }

            instance.pageNgGridSettings.settings.reload();

            instance.asyncStatus(pageHelper.AsyncStatus.Success);
        },
        onSuccess: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            $scope.showLoadPanel = false;
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;

        },
        onLoading: function (params) {
            var instance = this.instance;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            $scope.pageNotification.stuckNotifications.addError(params.Msg, $scope.domainEmailRedirectnotificationAlertArguments);
        }
    });

    //Delete Redirect Email Listing Remove Call Popup
    $scope.IsChooseEmailRedirectListingModalPopUpOpened = false;
    $scope.openChooseEmailRedirectListingModalPopUp = function (domainName, mailBoxId, mailBoxName, forwardTo, actionToPerform) {

        $scope.SelectedDomainNames = domainName;
        $scope.SelectedmailBoxIds = mailBoxId;
        $scope.SelectedmailBoxNames = mailBoxName;

        var isBulkAction = false;
        if (!$scope.IsChooseEmailRedirectListingModalPopUpOpened)
        {
            var activeModalInstance = $modal.open(
                {
                    templateUrl: "/Domains/SSL/Common/PromptRemove",
                    controller: 'promptRemoveModalCtrl',
                    size: 'lg',
                    resolve: {
                        modalTitle: function () {
                            return $scope.DomainsInfo.static_Modal_Title_RemoveForwarder;
                        },
                        modalContent: function () {
                            if (actionToPerform.toLocaleLowerCase() == 'multiremove') {
                                isBulkAction = true;
                                return $scope.DomainsInfo.static_MultiRemovePromptIntro;
                            }
                        }
                    }
                }
            );

            activeModalInstance.result.then(function (msg) {
                $scope.IsChooseEmailRedirectListingModalPopUpOpened = false;
                if (msg == 'yes') {
                    if (actionToPerform.toLowerCase() == 'multiremove') {
                        var domainName = $scope.SelectedDomainNames;
                        var data = $scope.pageBehavior.pageNgGridSettings.parameters.selection.selectedItems;

                        $scope.pageAction.Click(domainName, '', '', '', data, actionToPerform, true);
                    }
                }

            },
            function () {
                $scope.IsChooseEmailRedirectListingModalPopUpOpened = false;
                activeModalInstance = null;
            });

            activeModalInstance.opened.then(function () {
                $scope.IsChooseEmailRedirectListingModalPopUpOpened = true;
            });
        }

    }

    //Remove Action Click Event Handler
    $scope.pageAction = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            var loadingMessage = '';
            instance.Click = function (domainName, mailBoxId, mailBoxName, forwardTo, data, actionToPerform, isBulkAction)
            {
                var EmailForwarders = {};
                var Forwarders = [];
                var mailBoxNamesList = [];
                var forwardToList = [];

                if (actionToPerform == 'multiremove' || actionToPerform == 'remove')
                {
                    loadingMessage = '';

                    instance.asyncStatus(pageHelper.AsyncStatus.Loading, loadingMessage);                    

                    if(actionToPerform == 'multiremove')
                    {                        
                        for (var i = 0; i < data.length; i++) {
                            Forwarders.push({
                                MailboxId: data[i].MailboxId.replace(/ /g, ''),
                                MailboxName: data[i].MailboxName.replace(/ /g, ''),
                                ForwardTo: data[i].ForwardTo.replace(/ /g, '')
                            });

                            mailBoxNamesList[i] = data[i].MailboxName.replace(/ /g, '');
                            forwardToList[i] = data[i].ForwardTo.replace(/ /g, '');
                        }
                    }
                    else if (actionToPerform == 'remove')
                    {
                            Forwarders.push({
                                MailboxId: mailBoxId.replace(/ /g, ''),
                                MailboxName: mailBoxName.replace(/ /g, ''),
                                ForwardTo: forwardTo.replace(/ /g, '')
                            });

                            if (mailBoxName.indexOf('*') > -1) {

                                forwardToList = forwardTo.split(',');

                                for (i = 0; i < forwardToList.length; i++) {
                                    mailBoxNamesList[i] = '*';
                                }
                            }
                            else
                            {
                                mailBoxNamesList[0] = mailBoxName.replace(/ /g, '');
                                forwardToList[0] = forwardTo.replace(/ /g, '');
                            }
                    }

                    EmailForwarders = {
                        DomainName: domainName,
                        Forwarders: Forwarders
                    };                    

                    httpRepository.emailRedirect.removeForwarder(EmailForwarders).then(function (result)
                    {
                        if (result.Error == false)
                        {
                            if (result.Result)
                            {
                                //If Result List match to ncGrid item. matched item remove ncgrid page

                                var removeItem = '';
                                var removeCount = 0;

                                var nsModel = $scope.pageBehavior.pageNgGridSettings.parameters.storage.requestData;                                

                                if (mailBoxNamesList.length > 1) {
                                    for (i = 0; i < mailBoxNamesList.length; i++) {

                                        if (mailBoxNamesList[i] == '*')
                                        {
                                            removeItem = nsModel.filter(function (obj) { return (obj.MailboxName.replace(/ /g, '') == mailBoxNamesList[i].replace(/ /g, '')) })
                                            removeCount = (actionToPerform == 'remove') ? 1 : (forwardToList[i].split(',')).length;
                                        }
                                        else
                                        {
                                            removeItem = nsModel.filter(function (obj) { return (obj.MailboxName.replace(/ /g, '') == mailBoxNamesList[i].replace(/ /g, '') && obj.ForwardTo.replace(/ /g, '') == forwardToList[i].replace(/ /g, '')) })
                                        }

                                        $scope.UsedForwarders = (mailBoxNamesList[i] == '*') ? $scope.UsedForwarders - removeCount : $scope.UsedForwarders - removeItem.length;

                                        for (var removecount = 0 ; removecount < removeItem.length; removecount++) {
                                            $scope.pageBehavior.pageNgGridSettings.settings.actions.removeItem(removeItem[removecount]);
                                        }
                                    }
                                }
                                else {

                                    if (actionToPerform == 'multiremove') {
                                        mailBoxName = mailBoxNamesList[0];
                                        forwardTo = forwardToList[0];
                                    }

                                    var removeItem = nsModel.filter(function (obj) { return obj.MailboxName.replace(/ /g, '') == mailBoxName.replace(/ /g, '') && obj.ForwardTo.replace(/ /g, '') == forwardTo.replace(/ /g, '') })

                                    if (mailBoxName == '*')
                                    {
                                        removeCount = (actionToPerform == 'remove') ? 1 : (forwardTo.split(',')).length;
                                    }

                                    $scope.UsedForwarders = (mailBoxName == '*') ? $scope.UsedForwarders - removeCount : $scope.UsedForwarders - removeItem.length;                                    

                                    for (var removecount = 0 ; removecount < removeItem.length; removecount++) {
                                        $scope.pageBehavior.pageNgGridSettings.settings.actions.removeItem(removeItem[removecount]);
                                    }
                                }
                            }

                            if (isBulkAction == true) { $scope.uncheckCheckBoxes(); }
                            $scope.updateListTitle($scope.UsedForwarders, $scope.AvailableForwarders);
                            $scope.pageNotification.stuckNotifications.clear();
                            instance.asyncStatus(pageHelper.AsyncStatus.Success, { DomainName: domainName, ForwarderName: mailBoxNamesList, Message: result.Msg });
                        }
                        else
                        {
                            if (isBulkAction == true) { $scope.uncheckCheckBoxes(); }
                            $scope.pageNotification.stuckNotifications.clear();
                            instance.asyncStatus(pageHelper.AsyncStatus.Error, { DomainName: domainName, ForwarderName: mailBoxNamesList, Message: result.Msg });
                        }                                                       
                    });
                }
            }
        },
        onSuccess: function (params)
        {            
            $scope.pageNotification.stuckNotifications.clear();

            var instance = this.instance;
            var notifyCatchAll = false;
            var forwarderName = '';

            if (params.ForwarderName.length> 1)
            {
                var forwarderNamesList = params.ForwarderName;

                for (i = 0; i < forwarderNamesList.length; i++)
                {
                    forwarderName = (forwarderNamesList[i] != '*') ? (forwarderNamesList[i] + '@' + params.DomainName) : 'Catch-All';

                    if (forwarderName == 'Catch-All') {
                        $scope.CatchAllFlag = false;
                    }

                    if (forwarderName == 'Catch-All') {
                        if (!notifyCatchAll)
                        {
                            notifyCatchAll = true;
                            $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainsInfo.success_Contextual_EmailRedirectForwarderRemove.replace("{Forwarder}", forwarderName), $scope.domainEmailRedirectnotificationAlertArguments);
                        }
                    }
                    else {
                        $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainsInfo.success_Contextual_EmailRedirectForwarderRemove.replace("{Forwarder}", forwarderName), $scope.domainEmailRedirectnotificationAlertArguments);
                    }
                } 
            }
            else
            {
                forwarderName = params.ForwarderName[0];

                forwarderName = (forwarderName != '*') ? (forwarderName + '@' + params.DomainName) : 'Catch-All';

                if (forwarderName == 'Catch-All') {
                    $scope.CatchAllFlag = false;
                    $scope.ShowCatchAllButton = true;
                }
                $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainsInfo.success_Contextual_EmailRedirectForwarderRemove.replace("{Forwarder}", forwarderName), $scope.domainEmailRedirectnotificationAlertArguments);
            }

            if($scope.UsedForwarders == 1)
            {
                $scope.HideSelectAllCheckBox = true;
            }

            if ($scope.UsedForwarders == 0 || $scope.UsedForwarders > 1)
            {
                $scope.HideHorizontalLine = true;

                if ($scope.CatchAllForwarders > 1 && $scope.RegularsForwarders < 1)
                {
                    $scope.HideHorizontalLine = false;
                }
            }
            else
            {
                $scope.HideHorizontalLine = false;
            }
        },
        onActive: function (params)
        {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onLoading: function (params)
        {
            var instance = this.instance;            
            $scope.pageNotification.stuckNotifications.addLoading('Please wait.', false);
            instance.isDisabled = true;
            instance.showError = false;
        },
        onLocked: function (params)
        {
            var instance = this.instance;
        },
        onError: function (params)
        {
            var instance = this.instance;
            $scope.pageNotification.stuckNotifications.clear();
            $scope.pageNotification.stuckNotifications.addError($scope.DomainsInfo.error_Contextual_EmailRedirectForwarderRemove, $scope.domainEmailRedirectnotificationAlertArguments);
        }
    });

    //Add forwarder email starts
   
    $scope.IsForwarderModalOpened = false;
    $scope.openForwarderModal = function (action, mailBoxName, destinationEmail, id, index) {

        httpRepository.domainDetails.IsManagerHasRightsToPerformThisAction($scope.domainName, 'eforward').then(function (result) {
            if(result)
            {
                if (!$scope.IsForwarderModalOpened)
                {
                    var modalInstance = $modal.open({
                        templateUrl: "/Domains/ForwarderModalPopup",
                        controller: 'domainEmailRedirectActionCtrl',
                        size: 'lg',
                        backdrop: 'static',
                        //keyboard: false,

                        resolve: {
                            domainName: function () {
                                return $scope.domainName;
                            },

                            mailBoxName: function () {
                                return mailBoxName;
                            },
                            mailBoxId: function () {
                                return id;
                            },
                            forwardTo: function () {
                                return destinationEmail;
                            },
                            action: function () {
                                return action;
                            },
                            title: function () {
                                var modaltitle = '';
                                if (action == 'add') {
                                    title = $scope.DomainsInfo.static_Modal_Title_AddForwarder;
                                }
                                else if (action == 'edit') {
                                    title = $scope.DomainsInfo.static_Modal_Title_EditForwarder;

                                }
                                return title;
                            },
                            index: function () {
                                return index;
                            }
                        }
                    });
                    modalInstance.result.then(function (model) {
                        $scope.IsForwarderModalOpened = false;
                        var instance = this.instance;

                        if (model != null && model != undefined && model != '') {
                            if (model.Call == 'Success') {
                                var message = '';

                                if (action == 'add') {
                                    $scope.AddItemInGrid(model);
                                    message = $scope.DomainsInfo.success_Contextual_AddForwarder.replace('{Forwarder}', model.mailBoxName + '@' + $scope.domainName);
                                }
                                else if (action == 'edit') {
                                    $scope.UpdateItemInGrid(model);
                                    message = $scope.DomainsInfo.success_Contextual_EditForwarder.replace('{Forwarder}', model.oldMailBoxName + '@' + $scope.domainName);
                                }

                                $scope.pageNotification.stuckNotifications.addSuccess(message, $scope.domainEmailRedirectnotificationAlertArguments);
                            }
                            else if (model.Call == 'Error') {
                                if (model.SameEntryFlag != 'SameEntry') {

                                    $scope.pageNotification.stuckNotifications.addError(model.errMesg, $scope.domainEmailRedirectnotificationAlertArguments);
                                }
                                else {
                                    $scope.pageNotification.stuckNotifications.addWarning('Forwarder cannot be duplicated.', $scope.domainEmailRedirectnotificationAlertArguments);

                                }
                            }
                        }
                    });
                    modalInstance.opened.then(function (model) {
                        $scope.IsForwarderModalOpened = true;
                    });
                }

        }
        else {
            $scope.pageNotification.stuckNotifications.addError('User has no rights to perform this action', {
                hasClose: true,
                isAutoHide: true
            });
        }
        });
    }
    $scope.IsForwarderModalCatchAllOpened = false;
    $scope.openForwarderModalCatchAll = function (action, mailBoxName, destinationEmail, id, index) {
        httpRepository.domainDetails.IsManagerHasRightsToPerformThisAction($scope.domainName, 'eforward').then(function (result) {
            if (result) {
                if (!$scope.IsForwarderModalCatchAllOpened)
                {
                    var modalInstance = $modal.open({
                        templateUrl: "/Domains/ForwarderModalCatchAllPopup",
                        controller: 'domainEmailRedirectActionforCatchAllCtrl',
                        size: 'lg',
                        backdrop: 'static',
                        //keyboard: false,

                        resolve: {
                            domainName: function () {
                                return $scope.domainName;
                            },

                            mailBoxName: function () {
                                return mailBoxName;
                            },
                            mailBoxId: function () {
                                return id;
                            },
                            forwardTo: function () {
                                return destinationEmail;
                            },
                            action: function () {
                                return action;
                            },
                            title: function () {
                                var modaltitle = '';
                                if (action == 'add') {
                                    title = $scope.DomainsInfo.static_Modal_Title_AddCatchAll;
                                }
                                else if (action == 'edit') {
                                    title = $scope.DomainsInfo.static_Modal_Title_EditCatchAll;

                                }
                                return title;
                            },
                            index: function () {
                                return index;
                            }
                        }
                    });
                    modalInstance.result.then(function (model) {
                        $scope.IsForwarderModalCatchAllOpened = false;
                        var instance = this.instance;

                        if (model != null && model != undefined && model != '') {
                            if (model.Call == 'Success') {
                                $scope.CatchAllFlag = true;

                                var message = '';

                                if (action == 'add') {
                                    $scope.AddItemInGrid(model);
                                    message = $scope.DomainsInfo.success_Contextual_AddCatchAll;
                                }
                                else if (action == 'edit') {
                                    $scope.UpdateItemInGrid(model);
                                    message = $scope.DomainsInfo.success_Contextual_EditCatchAll;
                                }
                                $scope.pageNotification.stuckNotifications.addSuccess(message, $scope.domainEmailRedirectnotificationAlertArguments);
                            }
                            else if (model.Call == 'Error') {
                                if (action == 'add') {
                                    $scope.pageNotification.stuckNotifications.addError(model.errMesg, $scope.domainEmailRedirectnotificationAlertArguments);
                                }
                                else if (action == 'edit') {
                                    if (model.SameEntryFlag != 'SameEntry') {
                                        $scope.pageNotification.stuckNotifications.addError(model.errMesg, $scope.domainEmailRedirectnotificationAlertArguments);
                                    }
                                    else {
                                        $scope.pageNotification.stuckNotifications.addWarning('Forwarder cannot be duplicated.', $scope.domainEmailRedirectnotificationAlertArguments);

                                    }

                                }
                            }
                        }
                    });
                    modalInstance.opened.then(function (model) {
                        $scope.IsForwarderModalCatchAllOpened = true;
                    });
                }

            }
            else {
                $scope.pageNotification.stuckNotifications.addError('User has no rights to perform this action', {
                    hasClose: true,
                    isAutoHide: true
                });
            }
        });
    }
    //Add forwarder email ends

    $scope.AddItemInGrid = function (model) {

        var nsModel = $scope.pageBehavior.pageNgGridSettings.parameters.storage.requestData;

        if (nsModel.length > 0)
        {
            var addItemModel = angular.copy(nsModel[0]);

            addItemModel.chbId = "chbId" + nsModel.length;
            addItemModel.MailboxId = model.mailBoxId;
            addItemModel.MailboxName = model.mailBoxName;
            addItemModel.ForwardTo = model.forwardTo;

            $scope.pageBehavior.pageNgGridSettings.settings.actions.addNewItem(addItemModel);

            var forwardToList = model.forwardTo.split(',');

            $scope.UsedForwarders = $scope.UsedForwarders + forwardToList.length;

            $scope.updateListTitle($scope.UsedForwarders, $scope.AvailableForwarders);

            $scope.HideSelectAllCheckBox = false;

            if ($scope.UsedForwarders > 1)
            {
                $scope.HideHorizontalLine = true;
            }

            if (model.mailBoxName == '*')
            {
                $scope.ShowCatchAllButton = false;
            }
        }
        else
        {
            setTimeout(function () { location.reload(); }, 1000);
        }

        $scope.uncheckCheckBoxes();
    }

    $scope.UpdateItemInGrid = function (model) {

        if (model.mailBoxName == '*')
        {
            var oldForwarderCount = model.oldDestination.split(',').length;
            var newForwarderCount = model.forwardTo.split(',').length;        

            if (oldForwarderCount > newForwarderCount)
            {
                $scope.Used = $scope.Used - (oldForwarderCount - newForwarderCount);            
            }
            else
            {
                $scope.Used = $scope.Used + (newForwarderCount - oldForwarderCount);
            }

            $scope.updateListTitle($scope.Used, $scope.Total);
        }

        $scope.pageBehavior.pageNgGridSettings.parameters.storage.pageData[model.index].MailboxName = model.mailBoxName;
        $scope.pageBehavior.pageNgGridSettings.parameters.storage.pageData[model.index].ForwardTo = model.forwardTo;
        $scope.uncheckCheckBoxes();        
    }

    $scope.uncheckCheckBoxes = function () {
        $scope.pageBehavior.pageNgGridSettings.parameters.selection.selectedItems = [];
        var data = $scope.pageBehavior.pageNgGridSettings.parameters.storage.requestData;
        for (i = 0; i < data.length; i++)
            if (data[i].$ncColumnSelected == true)
                data[i].$ncColumnSelected = false;
        $('div#chb_selectAllForwarders').find('input[type="checkbox"]').removeAttr('checked');
    }

    $scope.updateListTitle = function (usedCount, totalCount) {
        $scope.UsedForwarders = usedCount;
        $scope.Used = usedCount;
        $scope.Total = totalCount;

        if (usedCount == 0) {
            $scope.CatchAllFlag = false;
            $scope.ShowCatchAllButton = true;
            $scope.ShowActionButtons = true;
        }
    }


    $rootScope.closeLightbox = function () {
        if ($scope.pageFrom=='domaindetails')
            window.location.href = '/Domains/DomainControlPanel/' + $scope.domainName + '/domain/';
        else
            window.location.href='/Domains/DomainList/'
    }
}]);;
app.controller('domainParkingPageActionCtrl', ['$scope', '$rootScope', '$modalInstance', 'httpRepository', '$filter', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'domainName', 'showParkingPageInfoAboutDnsUpdate','showParkingPageInfoAboutServiceUpdate', 'ParkingPagehostIDsList', 'TempParkingPagehostIDsList', 'hostIDsListToBeRemoved',
function ($scope, $rootScope, $modalInstance, httpRepository, $filter, notificationService, pageHelper, $q, ncGridParams, $sce, domainName, showParkingPageInfoAboutDnsUpdate, showParkingPageInfoAboutServiceUpdate, ParkingPagehostIDsList, TempParkingPagehostIDsList, hostIDsListToBeRemoved) {

    $scope.pageHelper = pageHelper;
    $scope.pageNotification = new notificationService.instance();

    $scope.domainName = domainName;
    $scope.showParkingPageInfoAboutDnsUpdate = showParkingPageInfoAboutDnsUpdate;
    $scope.showParkingPageInfoAboutServiceUpdate = showParkingPageInfoAboutServiceUpdate;
    $scope.ParkingPagehostIDsList = ParkingPagehostIDsList;
    $scope.TempParkingPagehostIDsList = TempParkingPagehostIDsList;
    $scope.hostIDsListToBeRemoved = hostIDsListToBeRemoved;    

    var IsPPrecordsExist = ($scope.ParkingPagehostIDsList == '') ? false : true;

    $scope.ShowPostLoader = function () {
        $('.opac').delay(25).queue(function () {
            $(this).addClass('page-load').css({ 'text-align': 'left', 'padding': '0em', 'opacity': '0.5', 'background-position': 'center 2.5em' });
        });
    }

    $scope.checkBoxClick = function () {
        if ($scope.HasPassport) {
            $scope.showCheckBoxError = false;
        }
    };

    $scope.SaveChanges = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.Click = function () {

                if ($scope.HasPassport)
                {
                    $scope.showCheckBoxError = false;
                    $scope.ShowPostLoader();

                    // Turn on parking page
                    if (IsPPrecordsExist)
                    {
                        httpRepository.domainDns.turningOnOrOffHostRecords($scope.ParkingPagehostIDsList, true, $scope.domainName).then(function (result)
                        {                                                        
                            if (result.Error)
                            {
                                instance.asyncStatus(pageHelper.AsyncStatus.Error, result);
                            }
                            else
                            {
                                if ($scope.hostIDsListToBeRemoved != '')
                                {
                                    httpRepository.domainDns.parkingPageRemoveHostRecord($scope.hostIDsListToBeRemoved, $scope.domainName).then(function (result) {
                                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                                    });
                                }
                                else
                                {
                                    instance.asyncStatus(pageHelper.AsyncStatus.Success, result);
                                }
                            }
                        });
                    }
                    //Create it (Remove all other @ and www records before create)
                    else 
                    {
                        httpRepository.domainDns.parkingPageAddHostRecord($scope.domainName).then(function (result)
                        {
                            if (result.Error)
                            {
                                instance.asyncStatus(pageHelper.AsyncStatus.Error, result);
                            }
                            else
                            {
                                if ($scope.hostIDsListToBeRemoved != '')
                                {
                                    httpRepository.domainDns.parkingPageRemoveHostRecord($scope.hostIDsListToBeRemoved, $scope.domainName).then(function (result)
                                    {
                                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                                    });
                                }
                                else
                                {                                    
                                    instance.asyncStatus(pageHelper.AsyncStatus.Success, result);                                    
                                }
                            }
                        });
                    }
                }
                else
                {
                    $scope.showCheckBoxError = true;
                }
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            $scope.DomainParams = { Call: "Success" };
            $modalInstance.close($scope.DomainParams);
        },
        onError: function (params) {
            var instance = this.instance;
            $scope.DomainParams = { Call: "Error"};
            $modalInstance.close($scope.DomainParams);
        }
    })

    $scope.cancelClick = function () {
        $modalInstance.close('');
    };

}]);;
app.controller('authorizeDNSCtrl', ['$scope', '$modalInstance', '$rootScope', 'httpRepository', '$filter', '$modal', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'ncGridEventNames', 'domainTransferInService', 'EmailList', 'Domain',
function ($scope, $modalInstance, $rootScope, httpRepository, $filter, $modal, notificationService, pageHelper, $q, ncGridParams, $sce, ncGridEventNames, domainTransferInService, EmailList, Domain) {

    $scope.cancelClick = function () {
        $modalInstance.close();
    };
    $scope.TotalEmail = EmailList;
    $scope.domain = Domain;
    $scope.AuthorizeDNS = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.click = function (emailSelected) {
                httpRepository.domainListAction.authorizeDNS(emailSelected, $scope.domain).then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                    $modalInstance.close(result);
                });
            }

        },
        onSuccess: function (params) {
            var instance = this.instance;
            $modalInstance.close(params);
        }
    });
}]);;
app.controller('bulkActionStepCommonCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'ncWizardService',
function ($scope, $rootScope, httpRepository, $filter, $modal, notificationService, pageHelper, $q, ncGridParams, $sce, ncWizardService) {

    $scope.selectedDomains = 0;
    $scope.selectedServices = 0;
    $scope.changeSelectedDomainCount = function (param) {
        var checkbox = $("input[type=\"checkbox\"][renewtype=\"domain\"]:checked");
        if (checkbox != undefined)
            $scope.selectedDomains = checkbox.length;
        else
            $scope.selectedDomains = 0;
    };

    $scope.changeSelectedServiceCount = function (param) {
        var checkbox = $("input[type=\"checkbox\"][renewtype=\"service\"]:checked");
        if (checkbox != undefined)
            $scope.selectedServices = checkbox.length;
        else
            $scope.selectedServices = 0;
    };
    $scope.changeSelectedDomainCount();
    $scope.changeSelectedServiceCount();
}]);
;
app.controller('confirmChangeNameServerToPremiumDnsModalCtrl', ['$scope', '$modalInstance',  'pageHelper', 'notificationService', '$document', 
    function ($scope, $modalInstance, pageHelper, notificationService, $document) {
       
        $scope.modalBehavior = new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                instance.showErrors = false;
                
                instance.create= function() {
                    $modalInstance.close(true);
                }
                instance.cancel = function () {
                    $modalInstance.dismiss('cancel');
                };
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
            },
            onSuccess: function (params) {
                var instance = this.instance;
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
            },
            onActive: function (params) {
                var instance = this.instance;
                instance.showErrors = false;
            },
            onLoading: function (params) {
                var instance = this.instance;
                instance.showErrors = false;
            },
            onError: function (params) {
                var instance = this.instance;
                instance.showErrors = true;
            }
        });

        $document.bind('keydown', function (evt) {
            if (evt.which === 27 && !$scope.modalBehavior.asyncStatus().isDisabled) {
                $modalInstance.dismiss('escape key press');
            }
        });
        $document.bind('click', function (evt) {
            if (angular.element(evt.target).hasClass("mfp-content") && !$scope.modalBehavior.asyncStatus().isDisabled) {
                $scope.modalBehavior.cancel();
            }
        });
    }]);
;
app.controller('contactslightboxCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', '$location', 'notificationService', 'pageHelper', '$timeout', '$attrs',
function ($scope, $rootScope, httpRepository, $filter, $modal, $location, notificationService, pageHelper, $timeout, $attrs) {
    //#region Local properties

    $scope.ctrlfrmcontactedit = {}
    $scope.copyApply = {}
    $scope.company = false;
    $scope.emailpattern = nc_Val_EmailPattern;

    $rootScope.closeLightbox = function () {
        window.location.href = "/Domains/DomainControlPanel/" + $scope.DomainContactsOverviewModel.DomainName + "/domain";
    };

    this.initialize = function (model) {
        $scope.DomainContactsOverviewModel = model;
        
        // $scope.dmncontact.PhoneCode = '12';

        ////filter phone no from Phone extension
        $scope.dmncontact = model.ContactDetails;

        if ($scope.dmncontact != null) {
            var phonecode = $scope.dmncontact.PhoneOnly;
            var fax = $scope.dmncontact.FaxOnly;
            $scope.dmncontact.Phone = phonecode;
            $scope.dmncontact.Fax = fax;
            $scope.dmncontact.PhoneCode = $scope.dmncontact.PhonePrefix.replace("+", "");
            if ($scope.dmncontact.FaxPrefix == null || $scope.dmncontact.FaxPrefix == "")
                $scope.dmncontact.FaxExt = "1";            
            else
                $scope.dmncontact.FaxExt = $scope.dmncontact.FaxPrefix.replace("+", "");

            if ($scope.dmncontact.PhoneExt != '') {
                $scope.dmncontact.PhoneNumberExt = $scope.dmncontact.PhonePrefix;
                $scope.dmncontact.PhoneExtCheckBox = true;
                $('.phone.phonefax').addClass('has-extension');
            }
            
            if (($scope.dmncontact.JobTitle != undefined && $scope.dmncontact.JobTitle != '') || ($scope.dmncontact.CompanyName != undefined && $scope.dmncontact.CompanyName != '')) {
                $scope.dmncontact.company = true;
                $('.show-hide-checkbox').addClass('expanded');
            }
        }





        ////end
        //alert(JSON.stringify($scope.DomainContactsSingleViewModel));
        $scope.ExtendedAttribute =
           {
               XXXExtendedAttributesInfo: { MemberId: "", Resolving: "" },
               CAExtendedAttributesInfo: { CIRAWhois: "", CIRALanguage: "", CIRAType: ""},
               USExtendedAttributesInfo: {},
               AsiaExtendedAttributesInfo: { ContactType: "", LegalEntityType: "", IdentForm: "", CcLocality: "", LocalityCity: "", LocalitySp: "", IdentNumber: "", OtherLegalType: "", OtherIdentForm: "" },
               NUExtendedAttributesInfo: { OrgNo: "", VatNo: "" },
               UkExtendedAttributesInfo: { UKLegalType: "", Registeredfor: "", CompanyID: "", RegOptOut: "" },
               COUKExtendedAttributesInfo: { UKLegalType: "", Registeredfor: "", CompanyID: "", RegOptOut: "" },
               MEUKExtendedAttributesInfo: { UKLegalType: "", Registeredfor: "", CompanyID: "", RegOptOut: "" },
               ORGUKExtendedAttributesInfo: { UKLegalType: "", Registeredfor: "", CompanyID: "", RegOptOut: "" }
           }

        //Create class and properties as like API parameters
        //$scope.ExtendedAttributeAPI =
        //   {
        //       XXXExtendedAttributesInfo: { XxxMembershipId: "", XxxResolving: "" },
        //       CAExtendedAttributesInfo: { CiraWhoisDisplay: "", CiraLanguage: "", CiraLegalType: "", CiraAgreementValue: "Y" },
        //       USExtendedAttributesInfo: {},
        //       AsiaExtendedAttributesInfo: { AsiaContactType: "", AsiaLegalEntity: "", AsiaIdentForm: "", AsiaccLocality: "", AsiaLocalityCity: "", AsiaLocalitySp: "", AsiaIdentNumber: "", AsiaOtherLegalType: "", AsiaOtherIdentForm: "" },
        //       NUExtendedAttributesInfo: { NUOrgNo: "", NUvatNo: "" },
        //       UkExtendedAttributesInfo: { UKLegalType: "", UKCompanyID: "", UKRegisteredfor: "", UKRegOptOut: "" },
        //       COUKExtendedAttributesInfo: { COUKLegalType: "", COUKCompanyID: "", COUKRegisteredfor: "", COUKRegOptOut: "" },
        //       MEUKExtendedAttributesInfo: { MEUKLegalType: "", MEUKCompanyID: "", MEUKRegisteredfor: "", MEUKRegOptOut: "" },
        //       ORGUKExtendedAttributesInfo: { ORGUKLegalType: "", ORGUKCompanyID: "", ORGUKRegisteredfor: "", ORGUKRegOptOut: "" }
        //   }

        $scope.ExtendedAttribute.USExtendedAttributesInfo = { RegistrantNexus: "", RegistrantNexusCountry: "", RegistrantPurpose: "" }

        //Setting default dropdown selected value
        //$scope.ExtendedAttribute.CAExtendedAttributesInfo.CIRAWhois = $scope.caCiraWhois[1].value;        
        //$scope.ExtendedAttribute.AsiaExtendedAttributesInfo.ContactType = $scope.asiaContactTypes[1].value;

        //Visibility set variables
        $scope.caCiraWhoisVisible = false;
        $scope.usNexusCountryVisible = false;

    }

    //   $scope.dmncontact.Country = "US";    
    // $scope.dmncontact.PhoneCode = "1";
    // $scope.dmncontact.FaxExt = "1";


    $scope.ZipCodeValidation = function (selectedCountry, zipCodeValue) {
        var selectedCountry = selectedCountry.toLowerCase();
        var nc_postalregx = '';
        if (selectedCountry == "us") {
            nc_postalregx = nc_Val_US_PostalCodeRegex;
        }

        else if (selectedCountry == "ca") {
            nc_postalregx = nc_Val_CA_PostalCodeRegex;
        }
        else if (selectedCountry == "gb") {
            nc_postalregx = nc_Val_GB_PostalCodeRegex;
        }
        else if (selectedCountry == "nl") {
            nc_postalregx = nc_Val_NL_PostalCodeRegex;
        }
        else if (selectedCountry == "br") {
            nc_postalregx = nc_Val_BR_PostalCodeRegex;
        }
        else if (selectedCountry == "jp") {
            nc_postalregx = nc_Val_JP_PostalCodeRegex;
        }
        else {
            nc_postalregx = nc_Val_PostalCodeRegex
        }
        if (zipCodeValue.match(nc_postalregx)) {
            return true;
        }
        else {
            return false;
        }
    }


    if ($scope.ctrlfrmcontactedit.frmdomaineditcontacts != undefined && $scope.ctrlfrmcontactedit.frmdomaineditcontacts.DomainContactCountry != undefined) {
        $scope.ctrlfrmcontactedit.frmdomaineditcontacts.DomainContactCountry.$setValidity('contactCountryrequired', true);
    }

    $scope.$watch('dmncontact.PhoneCode', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.ctrlfrmcontactedit.frmdomaineditcontacts != undefined && $scope.ctrlfrmcontactedit.frmdomaineditcontacts.PhoneCode != undefined) {
                if (newValue == "" && $scope.dmncontact.DomainContactPhone != '')
                    $scope.ctrlfrmcontactedit.frmdomaineditcontacts.PhoneCode.$setValidity('contactPhoneCodeRequired', false);
                else
                    $scope.ctrlfrmcontactedit.frmdomaineditcontacts.PhoneCode.$setValidity('contactPhoneCodeRequired', true);
            }
        }
    });

    $scope.$watch('dmncontact.FaxExt', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.ctrlfrmcontactedit.frmdomaineditcontacts != undefined && $scope.ctrlfrmcontactedit.frmdomaineditcontacts.FaxCode != undefined) {
                if (newValue == "" && $scope.dmncontact.FaxNumber != '')
                    $scope.ctrlfrmcontactedit.frmdomaineditcontacts.FaxCode.$setValidity('contactFaxCodeRequired', false);
                else
                    $scope.ctrlfrmcontactedit.frmdomaineditcontacts.FaxCode.$setValidity('contactFaxCodeRequired', true);
            }
        }
    });    
    
    $scope.$watch('dmncontact.Country', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.ctrlfrmcontactedit.frmdomaineditcontacts != undefined && $scope.ctrlfrmcontactedit.frmdomaineditcontacts.DomainContactCountry != undefined) {
                $scope.ctrlfrmcontactedit.frmdomaineditcontacts.DomainContactCountry.$setValidity('contactCountryrequired', true);
                if (newValue == "") {
                    $scope.ctrlfrmcontactedit.frmdomaineditcontacts.DomainContactCountry.$setValidity('contactCountryrequired', false);
                    $scope.ctrlfrmcontactedit.frmdomaineditcontacts.ZIPPostalCode.$setValidity('invalidzipcode', true)
                    $scope.ctrlfrmcontactedit.frmdomaineditcontacts.StateProvince.$setValidity('invalidstate', true);
                }
                else {

                    var zipValidationResult = $scope.ZipCodeValidation(newValue, $scope.dmncontact.PostalCode);
                    if (zipValidationResult)
                        $scope.ctrlfrmcontactedit.frmdomaineditcontacts.ZIPPostalCode.$setValidity('invalidzipcode', true)
                    else {
                        $scope.ctrlfrmcontactedit.frmdomaineditcontacts.ZIPPostalCode.$setValidity('invalidzipcode', false)                        
                    }


                    if ($scope.dmncontact.StateProvince != '') {
                        $scope.dmncontact.StateProvince = $scope.GetStateCode($scope.ctrlfrmcontactedit.frmdomaineditcontacts.StateProvince, newValue, $scope.dmncontact.StateProvince);
                    }

                }
            }
        }
    });

    $scope.GetStateCode = function (modelCtrl, selectedCountry, statevalue) {
        var countries = {
            //"IN": {
            //    // http://www.geopostcodes.com/India
            //    "states": {
            //        "TN": ["TN", "Tamilnadu"],
            //        "AP": ["AP", "Andrapradesh", "Andra"]
            //    }
            //},
            "US": {
                // http://www.geopostcodes.com/USA
                "states": {
                    "AL": ["AL", "Alabama"],
                    "AK": ["AK", "Alaska"],
                    "AZ": ["AZ", "Arizona"],
                    "AR": ["AR", "Arkansas"],
                    "CA": ["CA", "California"],
                    "CO": ["CO", "Colorado"],
                    "CT": ["CT", "Connecticut"],
                    "DE": ["DE", "Delaware"],
                    "FL": ["FL", "Florida"],
                    "GA": ["GA", "Georgia"],
                    "HI": ["HI", "Hawaii"],
                    "ID": ["ID", "Idaho"],
                    "IL": ["IL", "Illinois"],
                    "IN": ["IN", "Indiana"],
                    "IA": ["IA", "Iowa"],
                    "KS": ["KS", "Kansas"],
                    "KY": ["KY", "Kentucky"],
                    "LA": ["LA", "Louisiana"],
                    "ME": ["ME", "Maine"],
                    "MD": ["MD", "Maryland"],
                    "MA": ["MA", "Massachetts"],
                    "MI": ["MI", "Michigan"],
                    "MN": ["MN", "Minnesota"],
                    "MS": ["MS", "Mississippi"],
                    "MO": ["MO", "Missouri"],
                    "MT": ["MT", "Montana"],
                    "NE": ["NE", "Nebraska"],
                    "NV": ["NV", "Nevada"],
                    "NH": ["NH", "New Hampshire"],
                    "NJ": ["NJ", "New Jersey"],
                    "NM": ["NM", "New Mexico"],
                    "NY": ["NY", "New York"],
                    "NC": ["NC", "North Carolina"],
                    "ND": ["ND", "North Dakota"],
                    "OH": ["OH", "Ohio"],
                    "OK": ["OK", "Oklahoma"],
                    "OR": ["OR", "Oregon"],
                    "PA": ["PA", "Pennsylvania"],
                    "RI": ["RI", "Rhode Island"],
                    "SC": ["SC", "South Carolina"],
                    "SD": ["SD", "South Dakota"],
                    "TN": ["TN", "Tennessee"],
                    "TX": ["TX", "Texas"],
                    "UT": ["UT", "Utah"],
                    "VT": ["VT", "Vermont"],
                    "VA": ["VA", "Virginia"],
                    "WA": ["WA", "Washington"],
                    "WV": ["WV", "West Virginia"],
                    "WI": ["WI", "Wisconsin"],
                    "WY": ["WY", "Wyoming"],
                    "DC": ["DC", "Washington, D.C", "Washington D.C", "Washington DC", "Washington, DC"],
                    "AS": ["AS", "American Samoa"],
                    "UM": ["UM", "Minor Outlying Islands"],
                    "MP": ["MP", "Northern Mariana Islands"],
                    "PR": ["PR", "Puerto Rico"],
                    "VI": ["VI", "Virgin Islands"],
                    "GU": ["GU", "Guam"],
                    "FM": ["FM", "Federated States of Micronesia"],
                    "MH": ["MH", "Marshall Islands"],
                    "PW": ["PW", "Palau"],
                    "AE": ["AE", "Armed Forces Europe"],
                    "AP": ["AP", "Armed Forces Pacific"],
                    "AA": ["AA", "Armed Forces Americas"]


                }
            },
            "CA": {
                // http://www.geopostcodes.com/Canada
                "states": {
                    "AB": ["AB", "Alberta"],
                    "BC": ["BC", "British Columbia"],
                    "MB": ["MB", "Manitoba"],
                    "NB": ["NB", "New Brunswick"],
                    "NL": ["NL", "Newfoundland & Labrador"],
                    "NS": ["NS", "Nova Scotia"],
                    "ON": ["ON", "Ontario"],
                    "PE": ["PE", "Prince Edward Island"],
                    "QC": ["QC", "Quebec"],
                    "SK": ["SK", "Saskatchewan"],
                    "NT": ["NT", "Northwest Territories"],
                    "NU": ["NU", "Nunavut"],
                    "YT": ["YT", "Yukon"]
                }
            }
        };

        var selectedCountry = selectedCountry;
        var _country = countries[selectedCountry]
        if (_country != null) {
            validateState = true;
            var states = _country.states
            var currentState = "";
            var state = states[statevalue];
            for (var s in states) {
                for (var t in states[s]) {
                    if (t != "sortOn") {
                        currentState = states[s][t].replace(/[^a-zA-Z0-9]/g, '').toLowerCase()
                        if (statevalue.toLowerCase() === currentState) {
                            modelCtrl.$setValidity('invalidstate', true)
                            modelCtrl.$setViewValue(s);
                            modelCtrl.$render();
                            return s;
                        }

                    }


                }
            }
            modelCtrl.$setValidity('invalidstate', false)            
            modelCtrl.$setViewValue(statevalue);
            modelCtrl.$render();
            return statevalue;

        }
        else {
            modelCtrl.$setValidity('invalidstate', true)
            return statevalue;
        }
    }
    //Call Webmethod to save single contacts to their respected list   


    $scope.IsChooseContactModalPopUpOpened = false;
    $scope.openChooseContactModalPopUp = function (requestFrom) {
        if (!$scope.IsChooseContactModalPopUpOpened)
        {
            var modalInstance = $modal.open({
                templateUrl: "/Domains/ChooseAddressContact/",
                controller: 'ChooseContactModalCtrl',
                size: 'lg',
                backdrop: 'static',
            });

            modalInstance.result.then(function (model) {
                $scope.IsChooseContactModalPopUpOpened = false;
                if (model != '') {
                    if (requestFrom == 'Single') {
                        $scope.dmncontact.FirstName = model.FirstName;
                        $scope.dmncontact.LastName = model.LastName;
                        $scope.dmncontact.Organization = model.Organization;
                        $scope.dmncontact.JobTitle = model.JobTitle;
                        $scope.dmncontact.Address1 = model.Address1;
                        $scope.dmncontact.Address2 = model.Address2;
                        $scope.dmncontact.City = model.City;
                        $scope.dmncontact.StateProvince = model.StateProvince;
                        $scope.dmncontact.PostalCode = model.PostalCode;
                        var ddlCountryRegistrantMax = $('form[name="ctrlfrmcontactedit.frmdomaineditcontacts"] select#DomainContactCountry');
                        if (ddlCountryRegistrantMax.length) {
                            ddlCountryRegistrantMax.select2("val", model.Country)
                            $scope.dmncontact.Country = model.Country;
                        }
                        if (model.Phone.indexOf('.') != -1) {

                            $scope.dmncontact.Phone = model.Phone.split('.')[1];
                        }
                        $scope.dmncontact.PhoneNumberExt = model.PhoneExt;
                        if (model.Fax.indexOf('.') != -1) {

                            $scope.dmncontact.Fax = model.Fax.split('.')[1];
                        }
                        if (model.PhoneExt != '') {
                            $scope.dmncontact.PhoneExt = model.PhoneExt;
                            $scope.dmncontact.PhoneExtCheckBox = true;
                        }
                        $scope.dmncontact.EmailAddress = model.EmailAddress;

                        var ddlPhoneCodeRegistrantMax = $('form[name="ctrlfrmcontactedit.frmdomaineditcontacts"] select#DomainContactPhone');
                        if (ddlPhoneCodeRegistrantMax.length) {
                            if (model.Phone.indexOf('.') != -1) {

                                ddlPhoneCodeRegistrantMax.select2("val", model.Phone.split('.')[0].replace(/\+/g, ""))
                                $scope.dmncontact.PhoneCode = model.Phone.split('.')[0].replace(/\+/g, "");
                            }
                        }
                        var ddlFaxCodeRegistrantMax = $('form[name="ctrlfrmcontactedit.frmdomaineditcontacts"] select#FaxNumber');
                        if (ddlFaxCodeRegistrantMax.length) {
                            if (model.Fax.indexOf('.') != -1) {

                                ddlFaxCodeRegistrantMax.select2("val", model.Fax.split('.')[0].replace(/\+/g, ""))
                                $scope.dmncontact.FaxExt = model.Fax.split('.')[0].replace(/\+/g, "");
                            }
                        }
                    }

                }

            });

            modalInstance.opened.then(function (model) {
                $scope.IsChooseContactModalPopUpOpened = true;
            });
        }


    }
    $('.scrolltotop').click(function () {
        $('html, body').animate({ scrollTop: 0 }, 800);
    });


