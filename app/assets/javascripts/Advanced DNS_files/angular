app.controller('nyc_AlternativeContactCtrl', ['$scope', '$rootScope', 'httpRepository', function ($scope, $rootScope, httpRepository) {
	$scope.$on("InitExtendedAttributes", function (event, tldItem) {
		
	    $scope.$watch('tldItem.attributes.NYCNexusCategory', function () {
	        if ($scope.tldItem.form != null && $scope.tldItem.form.nyc_nexusCategory != null) {
	            $scope.tldItem.form.nyc_nexusCategory.$setValidity('required', tldItem.attributes.NYCNexusCategory > 0);
	        }
		});

		httpRepository.userContacts.getDomainContactsSettings().then(function (result) {

		    $scope.contacts = result.Result.DefaultDomainContacts;
		    $scope.contacts.form = $scope['form'];

		    if (tldItem.attributes.NYCContact == null)
		    {
		        tldItem.attributes.NYCContact = {
                    AddressName : null,
		            ContactInfoType: 0,
                    CustomAddressId: null,
		        }
		    }

			tldItem.attributes.NYCContact.title = 'New York Contact';

		    $scope.tldItem = tldItem;
		    $scope.tldItem.form = $scope['form'];
		});
	});

	$scope.nexusCategory = {
	    Organization: 1,
	    Individual: 2,
	};
}]);
;
app.controller('sg_AlternativeContactCtrl', ['$scope', '$rootScope', '$timeout', 'httpRepository', function ($scope, $rootScope, $timeout, httpRepository) {
		$scope.resources = DomainContactsRes;
		$scope.dropDownContactType = {
			None: 0,
			Profile: 1,
			Default: 2,
			Custom: 3,
			CreateNew: 4
		}

	var singaporeContacts= {
			combineCheckContacts: function() {
				$scope.tldItem.isSgAdminIdVisible = singaporeContacts.isRegistrantSingapore == true || singaporeContacts.isTechSingapore == true;
			},
			isRegistrantSingapore: false,
			isTechSingapore: false,
			check: function(contact, key) {
				if (contact.ContactInfoType.toString() == $scope.dropDownContactType.None.toString()) {
					singaporeContacts[key] = false;
				}
				else if ($rootScope.primaryAddressInfo != null && contact.ContactInfoType.toString() == $scope.dropDownContactType.Profile.toString()) {
					singaporeContacts[key] = $rootScope.primaryAddressInfo.Country == "SG";
				}
				else if ($rootScope.defaultAddressInfo != null && contact.ContactInfoType.toString() == $scope.dropDownContactType.Default.toString()) {
					singaporeContacts[key] = $rootScope.defaultAddressInfo.Country == "SG";
				} else {
					httpRepository.userContacts.getCustomContactInfo(contact.CustomAddressId).then(function (result) {
						singaporeContacts[key] = result.Result.Country == "SG";
						singaporeContacts.combineCheckContacts();
					});
				}
				singaporeContacts.combineCheckContacts();
			},
			initCheck: function () {
				this.check($scope.tldItem.contacts.Registrant, 'isRegistrantSingapore');
				this.check($scope.tldItem.contacts.Tech, 'isTechSingapore');
				var listeners = [
					{
						path: 'tldItem.contacts.Registrant.ContactInfoType', skip: [$scope.dropDownContactType.Custom.toString(), $scope.dropDownContactType.CreateNew.toString()],
						contact: $scope.tldItem.contacts.Registrant, key: 'isRegistrantSingapore'
					},
					{ path: 'tldItem.contacts.Registrant.CustomAddressId', contact: $scope.tldItem.contacts.Registrant, key: 'isRegistrantSingapore' },
					{
						path: 'tldItem.contacts.Tech.ContactInfoType', skip: [$scope.dropDownContactType.Custom.toString(), $scope.dropDownContactType.CreateNew.toString()],
						contact: $scope.tldItem.contacts.Tech, key: 'isTechSingapore'
					},
					{ path: 'tldItem.contacts.Tech.CustomAddressId', contact: $scope.tldItem.contacts.Tech, key: 'isTechSingapore' }
				];
				var checkSkipValue = function(path, value) {
					for (var i = 0; i < listeners.length; i++) {
						if (listeners[i].path == path) {
							var listener = listeners[i];
							if (!listener.skip) {
								return listener;
							} else {
								return (listener.skip.indexOf(value) > -1)?false:listener;
							}
						}
					}
					return false;
				}
				for (var i = 0; i < listeners.length; i++) {
					$scope.$watch(listeners[i].path, function (newValue, oldvalue) {
						if (newValue == oldvalue) return;
						var listener = checkSkipValue(this.exp, newValue);
						if (listener == false) return;
						singaporeContacts.check(listener.contact,listener.key);
					});
				}
			}

		}

	$scope.$on("InitExtendedAttributes", function (event, tldItem) {
        $scope.tldItem = tldItem;
        $scope.tldItem.form = $scope['form'];
				singaporeContacts.initCheck();
		});
}]);
;
app.controller('uk_AlternativeContactCtrl', ['$scope', '$rootScope', function ($scope, $rootScope) {

    $scope.resources = DomainContactsRes;

    $scope.legalType = {
        IND: 0,
        FIND: 1,
        LTD: 2,
        PLC: 3,
        PTNR: 4,
        LLP: 5,
        STRA: 6,
        RCHAR: 7,
        IP: 8,
        SCH: 9,
        GOV: 10,
        CRC: 11,
        STAT: 12,
        OTHER: 13,
        FCORP: 14,
        FOTHER: 15
    };

    $scope.$on("InitExtendedAttributes", function (event, tldItem) {
        $scope.tldItem = tldItem;
        $scope.tldItem.form = $scope['form'];

        if (!tldItem.attributes.RegOptOut)
            tldItem.attributes.RegOptOut = 'n';

        $scope.tldItem.attributes.cbWhoisData = $scope.tldItem.attributes.RegOptOut.toLowerCase() == 'y';

        if ($scope.tldItem.attributes.Registeredfor == null || $scope.tldItem.Registeredfor == '') {
            $scope.tldItem.attributes.Registeredfor = $scope.tldItem.firstName + ' ' + $scope.tldItem.lastName;
        }
        tldItem.prepareSave = function() {
        	$scope.tldItem.attributes.RegOptOut = ($scope.tldItem.attributes.cbWhoisData) ? 'y' : 'n';

					// cleanup old values
        	if (tldItem.attributes.UKLegalType != $scope.legalType.IND
						&& tldItem.attributes.UKLegalType != $scope.legalType.FIND)
        		tldItem.attributes.cbWhoisData = null;

	        if (tldItem.attributes.UKLegalType != $scope.legalType.LTD
		        && tldItem.attributes.UKLegalType != $scope.legalType.PLC
		        && tldItem.attributes.UKLegalType != $scope.legalType.LLP
		        && tldItem.attributes.UKLegalType != $scope.legalType.RCHAR)
		        tldItem.attributes.CompanyID = null;
        }
    });

   
}]);

;
app.controller('us_AlternativeContactCtrl', [
	'$scope', '$rootScope', '$timeout', function($scope, $rootScope, $timeout) {
		$scope.countries = $rootScope.countries;
		$scope.nexusCategory = {
			C11: 0,
			C12: 1,
			C21: 2,
			C31: 3,
			C32: 4
		};
		$scope.nexusPurpose = {
			P1: 0,
			P2: 1,
			P3: 2,
			P4: 3,
			P5: 4
		};

	function isCountryRequired() {
		return $scope.tldItem.attributes.RegistrantNexus == $scope.nexusCategory.C31 || $scope.tldItem.attributes.RegistrantNexus == $scope.nexusCategory.C32;
	}

    $scope.$on("InitExtendedAttributes", function (event, tldItem) {
			$scope.tldItem = tldItem;
			$scope.tldItem.form = $scope['form'];

		if (!isCountryRequired()) {
			tldItem.attributes.RegistrantNexusCountry = null;
		}

			if (tldItem.attributes.RegistrantNexusCountry != null) {
				var selectedCountry = angular.copy(tldItem.attributes.RegistrantNexusCountry.toString());
				$scope.tldItem.attributes.RegistrantNexusCountry = null;
				$timeout(function() {
					$scope.tldItem.attributes.RegistrantNexusCountry = selectedCountry;
				});
			}

			$scope.$watch('tldItem.attributes.RegistrantNexus', function() {
				if ($scope.tldItem.form.us_NexusCategory) {
					$scope.tldItem.form.us_NexusCategory.$setValidity('required', tldItem.attributes.RegistrantNexus > -1);

		        var isCountryEntered = $scope.tldItem.attributes.RegistrantNexusCountry != null;

		        if ( !isCountryRequired() ) {
			        $scope.tldItem.attributes.RegistrantNexusCountry = null;
		        }

		        if (angular.isDefined($scope.tldItem.form.us_CountryCode)) {
		        	$scope.tldItem.form.us_CountryCode.$setValidity('required', !isCountryRequired || isCountryEntered);
		        }

			}
			});

			$scope.$watch('tldItem.attributes.RegistrantPurpose', function() {
				if ($scope.tldItem.form.us_NexusPurpose) {
					$scope.tldItem.form.us_NexusPurpose.$setValidity('required', tldItem.attributes.RegistrantPurpose > -1);
				}
			});

			tldItem.prepareSave = function () {
				// cleanup old values
				if (tldItem.attributes.RegistrantNexus != $scope.nexusCategory.C31 && tldItem.attributes.RegistrantNexus != $scope.nexusCategory.C32)
					tldItem.attributes.RegistrantNexusCountry = null;
			}

		});

	}
]);;
app.controller('xxx_AlternativeContactCtrl', ['$scope', '$rootScope', 'pageHelper', function ($scope, $rootScope, pageHelper) {
    $scope.resources = DomainContactsRes;
    $scope.$on("InitExtendedAttributes", function (event, tldItem) {
        $scope.tldItem = tldItem;
        $scope.tldItem.form = $scope['form'];
        $scope.pageHelper = pageHelper;

        //$scope.$watch('tldItem.attributes.MemberId', function (newValue, oldValue) {
        //    if (newValue !== oldValue) {
        //        var isValid = pageHelper.Validation.digitsOnly(newValue);
        //        $scope.form.xxxMembershipId.$setValidity('invalidIcmMemberID', isValid.isValid);

        //        var isValidLength = (newValue == "" || newValue == null) ? true : (newValue.length == 16);
        //        $scope.form.xxxMembershipId.$setValidity('invalidIcmMemberIDLength', isValidLength);
        //    }
        //});
    });
}]);
;
app.controller('notificationCtrl', ['$scope', '$rootScope', 'httpRepository', 'pageHelper', 'notificationService', '$filter', '$modal',
function ($scope, $rootScope, httpRepository, pageHelper, notificationService, $filter, $modal) {
    $scope.NotificationsRes = NotificationsRes;
    $scope.pageHelper = pageHelper;
    $scope.pageNotification = new notificationService.instance();

    $scope.notificationBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.activeNotification = new notificationService.instance();
            instance.asyncStatus(pageHelper.AsyncStatus.Loading);

            httpRepository.notifications.getInfo().then(function (result) {
                result.sender = "getModel";
                instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
            });
        },

        onSuccess: function (params) {
            var instance = this.instance;
            
            if (params.sender == 'getModel') {
                var tmpList = [];
                for (var i = 0; i < params.Result.OptionalNotificationList.length; i++) {
                    var itemBehavior = createNotificationItemBehavior(params.Result.OptionalNotificationList[i]);
                    tmpList.push(itemBehavior);
                }
                instance.model = tmpList;
                instance.showContent = true;
                instance.showLoadPanel = false;
            }
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = true;
        },
        onError: function (params) {
            var instance = this.instance;

            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                hasClose: true,
                isAutoHide: false
            });
        }
    });

    function createNotificationItemBehavior(item) {
        return new pageHelper.AsyncStateBehavior({
            constructor: function() {
                var instance = this.instance;
                instance.model = item;
                
                instance.switchOptions = function () {
                    var isEnabled = instance.model.IsEnabled;
                    var notificationType = instance.model.NotificationType;
                    instance.model.IsEnabled = !instance.model.IsEnabled;
                    httpRepository.notifications.switchOptions(isEnabled, notificationType)
                        .then(function (result) {
                            result.sender = "switchOptions";
                            result.model = instance.model;
                        if (result.Error == false) {
                            instance.asyncStatus(pageHelper.AsyncStatus.Success);
                        } else {
                            instance.asyncStatus(pageHelper.AsyncStatus.Error, result);};
                    });
                };
            },
            onSuccess: function() {
                var instance = this.instance;
                instance.model.IsEnabled = !instance.model.IsEnabled;
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
            },
            onActive: function () {
                var instance = this.instance;
            },
            onLoading: function () {
                var instance = this.instance;
            },
            onError: function (params) {
                var instance = this.instance;
                if (params.sender == 'switchOptions') {
                    params.Msg = !params.model.IsEnabled ? $filter('stringFormat')($scope.NotificationsRes.label_notifications_not_possible_on, [$scope.NotificationsRes['label_' + params.model.Name]])
                        : $filter('stringFormat')($scope.NotificationsRes.label_notifications_not_possible_off, [$scope.NotificationsRes['label_' + params.model.Name]]);
                }

                instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
                instance.showNotifications = true;
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
            }
        });
    }
}])
;
app.directive('getStateProvince', [function () {
    var countries = {
        //"IN": {
        //    // http://www.geopostcodes.com/India
        //    "states": {
        //        "TN": ["TN", "Tamilnadu"],
        //        "AP": ["AP", "Andrapradesh", "Andra"]
