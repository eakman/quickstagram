               //    $scope.TechContacts.LastName = params.Result.UserAddressInfoSection.Address.LastName;
               //    $scope.TechContacts.Address = params.Result.UserAddressInfoSection.Address.Address1;
               //    $scope.TechContacts.Address1 = params.Result.UserAddressInfoSection.Address.Address2;
               //    $scope.TechContacts.CompanyName = params.Result.UserAddressInfoSection.Address.Organization;
               //    $scope.TechContacts.JobTitle = params.Result.UserAddressInfoSection.Address.JobTitle;
               //    if (params.Result.UserAddressInfoSection.Address.Phone.indexOf('.') != -1) {

               //        $scope.TechContacts.PhoneNumber = params.Result.UserAddressInfoSection.Address.Phone.split('.')[1];
               //    }
               //    if (params.Result.UserAddressInfoSection.Address.Fax.indexOf('.') != -1) {

               //        $scope.TechContacts.FaxNumber = params.Result.UserAddressInfoSection.Address.Fax.split('.')[1];
               //    }
               //    $scope.TechContacts.ZIPPostalCode = params.Result.UserAddressInfoSection.Address.PostalCode;
               //    $scope.TechContacts.StateProvince = params.Result.UserAddressInfoSection.Address.StateProvince;
               //    $scope.TechContacts.City = params.Result.UserAddressInfoSection.Address.City;
               //    $scope.TechContacts.PhoneNumberExt = params.Result.UserAddressInfoSection.Address.PhoneExt;
               //    $scope.TechContacts.EmailAddress = params.Result.UserAddressInfoSection.Address.EmailAddress;
               //    if (params.Result.UserAddressInfoSection.Address.Phone.indexOf('.') != -1) {

               //        $scope.TechContacts.PhoneCode = params.Result.UserAddressInfoSection.Address.Phone.split('.')[0].replace(/\+/g, "");
               //    }
               //    if (params.Result.UserAddressInfoSection.Address.Fax.indexOf('.') != -1) {

               //        $scope.TechContacts.FaxCode = params.Result.UserAddressInfoSection.Address.Fax.split('.')[0].replace(/\+/g, "");
               //    }
               //    $scope.TechContacts.Country = params.Result.UserAddressInfoSection.Address.Country.toUpperCase();
               //    if (ddlPhoneCodeTechnical.length) {
               //        if (params.Result.UserAddressInfoSection.Address.Phone.indexOf('.') != -1) {

               //            ddlPhoneCodeTechnical.select2("val", params.Result.UserAddressInfoSection.Address.Phone.split('.')[0].replace(/\+/g, ""));

               //        }
               //        else
               //            $(ddlPhoneCodeTechnical).prop("disabled", false);
               //    }
               //    if (ddlCountryTechnical.length) {
               //        ddlCountryTechnical.select2("val", params.Result.UserAddressInfoSection.Address.Country.toUpperCase());
               //    }
               //    if (ddlFaxCodeTechnical.length) {
               //        if (params.Result.UserAddressInfoSection.Address.Fax.indexOf('.') != -1) {

               //            ddlFaxCodeTechnical.select2("val", params.Result.UserAddressInfoSection.Address.Fax.split('.')[0].replace(/\+/g, ""));
               //        }
               //        else
               //            $(ddlFaxCodeTechnical).prop("disabled", false);
               //    }
               //    if (params.Result.UserAddressInfoSection.Address.PhoneExt != '') {
               //        $scope.TechContacts.PhoneExtCheckBox = true;
