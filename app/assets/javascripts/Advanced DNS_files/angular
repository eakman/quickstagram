            if (ContactType == "CED") {
                $scope.asiaDetailDivVisible = true;
            }
            else {
                $scope.asiaDetailDivVisible = false;
            }
        }
        $scope.AsiaLegalTypeChange = function (LegalType) {            
            if (LegalType == "Other") {
                $scope.asiaOtherLegalTypeVisible = true;
            }
            else {
                $scope.asiaOtherLegalTypeVisible = false;
            }
        }
        $scope.AsiaIdentFormChange = function (IdentForm) {            
            if (IdentForm == "Other") {
                $scope.asiaOtherIdentFormVisible = true;
            }
            else {
                $scope.asiaOtherIdentFormVisible = false;
            }
        }

        //.UK
        $scope.UKLegalTypeChange = function (ukLegalType) {

            //Hiding/Showing Company ID No textbox
            if (ukLegalType != "LTD" && ukLegalType != "PLC" && ukLegalType != "LLP" && ukLegalType != "RCHAR" && ukLegalType != "SCH") {
                $scope.ukCompanyIDVisible = false;
            }
            else {
                $scope.ukCompanyIDVisible = true;
            }
            //Hiding/Showing whois dropdown
            var ukLegalTypes = '[IND][FIND]';
            if (ukLegalTypes.indexOf('[' + ukLegalType + ']') !== -1) {
                $scope.ukWhoisVisible = true;
            }
            else {
                $scope.ukWhoisVisible = false;
            }
        }

        //.UK
        function FunUKLegalTypeChange (ukLegalType) {

            //Hiding/Showing Company ID No textbox
            if (ukLegalType != "LTD" && ukLegalType != "PLC" && ukLegalType != "LLP" && ukLegalType != "RCHAR" && ukLegalType != "SCH") {
                $scope.ukCompanyIDVisible = false;
            }
            else {
                $scope.ukCompanyIDVisible = true;
            }
            //Hiding/Showing whois dropdown
            var ukLegalTypes = '[IND][FIND]';
            if (ukLegalTypes.indexOf('[' + ukLegalType + ']') !== -1) {
                $scope.ukWhoisVisible = true;
            }
            else {
                $scope.ukWhoisVisible = false;
            }
        }

        
        //.CA
        $scope.CALegalTypeChange = function (caLegalType) {
            //alert(caLegalType);
            var registranttypes = '[CCT][RES][ABO][LGR]';
            if (registranttypes.indexOf('[' + caLegalType + ']') !== -1) {
                $scope.caCiraWhoisVisible = true;
            }
            else {
                $scope.caCiraWhoisVisible = false;
            }
        }
        //.US
        $scope.USNexusChange = function (usNexusType) {
            //alert(caLegalType);
            var usNexusTypes = '[C31][C32]';
            if (usNexusTypes.indexOf('[' + usNexusType + ']') !== -1) {
                $scope.usNexusCountryVisible = true;
            }
            else {
                $scope.usNexusCountryVisible = false;
            }
        }
    }
]);;
app.controller('configurationController', [
    'urlConfiguration',
    function(urlConfiguration) {
        var vm = this;

        angular.extend(vm, {
            configUrls: function (urls) {
                urlConfiguration.configureUrls(urls);
            }
        });
    }
]);;
app.controller('confirmNmPasswordCtrl', ['$scope', '$modalInstance', '$document', 'modalTitle', 'modalIntro', 'confirmFn', 'pageHelper','notificationService','alertMsgs',
function ($scope, $modalInstance, $document, modalTitle, modalIntro, confirmFn, pageHelper, notificationService, alertMsgs) {
    $scope.modalTitle = modalTitle;
    $scope.modalIntro = modalIntro;
    $scope.pageHelper = pageHelper;
    $scope.startAutoFocus = true;
    var errorMessageRes = ErrorMessageRes;

    $scope.$watch('nmPassword', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            var validity = pageHelper.Validation.namecheapPassword(newValue);
            for (var validityName in validity) {
                $scope.confirmNmPasswordForm.nmPassword['errorMsg_' + validityName] = validity[validityName].arg;
                $scope.confirmNmPasswordForm.nmPassword.$setValidity(validityName, validity[validityName].isValid);
            }
            $scope.confirmNmPasswordForm.nmPassword.$setValidity('invalidPassword', true);
        }
    });

    $scope.modalBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.activeNotification = new notificationService.instance();

            instance.cancel = function () {
                $modalInstance.dismiss('cancel');
            }
            instance.confirm = function () {
            	if ($scope.confirmNmPasswordForm.$valid) {
		          		instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                	confirmFn($scope.nmPassword, $scope.modalBehavior);
                }
                else {
                    angular.forEach($scope.confirmNmPasswordForm.$error.required, function (field) {
                        field.$setDirty();
                    });

                    instance.showErrors = true;
                    msg = errorMessageRes.error_FormIsNotValid;
                    instance.activeNotification.alerts.clear();
                    instance.activeNotification.alerts.addError(msg, {
                        hasClose: true,
                        isAutoHide: true

                    });
                    instance.asyncStatus(pageHelper.AsyncStatus.Active);
                }
            }
            if (alertMsgs != null )
            {
                instance.showErrors = true;
                for (var msgIndex = 0; msgIndex < alertMsgs.length; msgIndex++)
                {
                    instance.activeNotification.alerts.items.push(alertMsgs[msgIndex]);
                }
            }
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onSuccess: function (params) {
            var instance = this.instance;
            instance.showErrors = false;
            $modalInstance.close('yes');
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.showErrors = false;
        },
        onError: function (params) {
            var instance = this.instance;

            instance.activeNotification.alerts.clear();
            if (params.Errors[0] != null) {
                switch(params.Errors[0].ErrorFullCode) {
                    case 1011109:$scope.confirmNmPasswordForm.nmPassword.$setValidity('invalidPassword',false); break;
                    case 1017411: $scope.confirmNmPasswordForm.nmPassword.$setValidity('lockedAccount', false); break;
                    default: {
                        instance.showErrors = true;
                        instance.activeNotification.alerts.clear();
                        instance.activeNotification.alerts.addError(params.Msg, {
                            hasClose: true,
                            isAutoHide: true
                        });
                    } break;
                }
            }
            else {
                instance.showErrors = true;
                instance.activeNotification.alerts.clear();
                instance.activeNotification.alerts.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        }
    });

    $document.bind('keydown', function (evt) {
        if (evt.which === 27 && !$scope.modalBehavior.asyncStatus().isDisabled) {
            $scope.modalBehavior.cancel();
        }
    });
    $document.bind('click', function (evt) {
        if (angular.element(evt.target).hasClass("mfp-content") && !$scope.modalBehavior.asyncStatus().isDisabled) {
            $scope.modalBehavior.cancel();
        }
    });
}]);;
app.controller('promptRemoveModalCtrl', ['$scope', '$modalInstance', '$document','modalTitle','modalContent',
function ($scope, $modalInstance, $document, modalTitle, modalContent) {
        $scope.modalTitle = modalTitle;
        $scope.modalContent = modalContent;
        $scope.startAutoFocus = true;

        $scope.onYes= function() {
            $modalInstance.close('yes');
        }
        $scope.onCancel = function () {
            $modalInstance.dismiss('cancel');
        }

        $document.bind('keydown', function (evt) {
            if (evt.which === 27) {
                $scope.onCancel();
            }
        });
        $document.bind('click', function (evt) {
            if (angular.element(evt.target).hasClass("mfp-content")) {
                $scope.onCancel();
            }
        });
}]);

    //var activeModalInstance = $modal.open({
