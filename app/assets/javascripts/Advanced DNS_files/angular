                //eventScope.$on(ncGridEventNames.ncGridSelectItemBefore, function (event, parameters) {
                //    $scope.actionPerforming = "loaded";
                //});
                //eventScope.$on(ncGridEventNames.ncGridSelectItemAfter, function (event, parameters) {
                //    $scope.actionPerforming = "loaded";
                //});

                //eventScope.$on(ncGridEventNames.ncGridUnselectItemBefore, function (event, parameters) {
                //    $scope.actionPerforming = "loaded";
                //});
                //eventScope.$on(ncGridEventNames.ncGridUnselectItemAfter, function (event, parameters) {
                //    $scope.actionPerforming = "loaded";
