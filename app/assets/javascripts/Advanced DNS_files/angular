app.factory('httpService', ['$http', '$q', '$cookies', function ($http, $q, $cookies) {
    var sendRequest = function(method, url, data) {
        var defer = $q.defer();
        var httpReqest = null;
        if (method == 'GET') {
            httpReqest = $http({ method: method, url: url, params: data });
        } else {
            httpReqest = $http({method: method,url: url,data: data});
        }
        httpReqest.success(function (result, status, headers, config) {
            defer.resolve(result);
        })
        //Raising an error if request has not reached server
        .error(function (result, status, headers, config) {
            var getErrorMessage = function () {
                //Override error msg by status
                if (status == 500) {
                    return 'Internal Server Error';
                }
                return "";
            }
            var errorResult = {
                Msg:getErrorMessage(),
                Result: null,
                Error: true,
                ErrorStatus:status
            }
            defer.resolve(errorResult);
        });
        return defer.promise;
    }

    var sendRequestPost = function (method, url, data, withCredentials) {
    	var defer = $q.defer();
    	var token = ncCompliance.getToket();
    	if (token != null && token.value) {
    		$http.defaults.headers.common[token.tokenName] = token.value;
	    }
	    
    	$http({
			   method: method, url: url, data: data,
         contentType: 'application/json; charset=utf-8',
         withCredentials: withCredentials
        })
        .success(function (result, status, headers, config) {
            defer.resolve(result);
        })
        //Raising an error if request has not reached server
        .error(function (result, status, headers, config) {
            var getErrorMessage = function () {
                //Override error msg by status
                if (status == 500) {
                    return 'Internal Server Error';
                }
                return "";
            }
            var errorResult = {
                Msg: getErrorMessage(),
                Result: null,
                Error: true,
                ErrorStatus: status
            }
            defer.resolve(errorResult);
        });
        return defer.promise;
    }
    return {
        Get: function (url, data) {
            return sendRequest('GET', url, data);
        },
        Post: function (url, data, withCredentials) {
            return sendRequestPost('POST', url, data, withCredentials);
        }
    }
}]);;
app.service('ncCollection', [function (){
	return {
		chunk: chunk
	};

	/**
	 * @param {Array} array.
	 * @param {number} chunkSize
	 * @returns {Array[]}
	 */
	function chunk(array, chunkSize) {
		chunkSize = Math.max(chunkSize, 0);
		var length = array ? array.length : 0;
		if (!length || chunkSize < 1) {
			return [];
		}
		var startIndex = 0,
			tailIndex = chunkSize,
			nextChunkIndex = 0,
			chunks = Array(Math.ceil(length / chunkSize));

		while (startIndex < length) {
			tailIndex = startIndex + chunkSize;
			chunks[nextChunkIndex++] = Array.prototype.slice.call(array, startIndex, tailIndex);
			startIndex = tailIndex;
		}
		return chunks;
	}
}]);;
app.service('ncLocation', [
	function () {
	    'use strict';
	    return {
	        getHash: function () {
	            var location = window.location;
	            return location.hash && location.hash.replace(/^#\//, '');
	        },
            setHash: function(newHash) {
                window.location.hash = '#/' + newHash;
            }
	    }
	}
]);;
app.factory('ncTableParser', [function () {
    var metadata, data;
    var parseElement = function (elementData) {
        var meta = metadata[elementData[0]];
        var element = {};
        for (var i = 1; i < meta.length; i++) {
            if (elementData[i] == undefined) {
                continue;
            }
            var metaData = meta[i];
            if (metaData.Element && metaData.Element.Type == "object") {
                element[metaData.Field] = [];
                for (var arrayIndex = 0; arrayIndex < elementData[i].length; arrayIndex++) {
                    element[metaData.Field].push(parseElement(elementData[i][arrayIndex]));
                }
            } else if (metaData.Type == "bool") {
                element[metaData.Field] = elementData[i] == 1;
            }
            else if (metaData.Type == "dic") {
                element[metaData.Field] = {};
                if (metaData.valueOf.Type != "object") {
                    for (var dicIndex = 0; dicIndex < elementData[i].length; dicIndex++) {
                        element[metaData.Field][elementData[i][dicIndex][0]] = elementData[i][dicIndex][1];
                    }
                } else {
                    for (var dicIndex = 0; dicIndex < elementData[i].length; dicIndex++) {
                        element[metaData.Field][elementData[i][dicIndex][0]] = parseElement(elementData[i][dicIndex][1]);
                    }
                }
            }
            else if (metaData.Type == "array") {
                element[metaData.Field] = [];
                for (var arrayIndex = 0; arrayIndex < elementData[i].length; arrayIndex++) {
                    element[metaData.Field].push(elementData[i][arrayIndex]);
                }
            }
            else {
                element[metaData.Field] = elementData[i];
            }
        }
        return element;
    }

    return function (jsonResult) {
        data = jsonResult.Data;
        metadata = jsonResult.Metadata;
        var result = [];
        for (var i = 0; i < data.length; i++) {
            result.push(parseElement(data[i]));
        }
        return result;
    }
}]);;
app.factory('notificationService', ['$rootScope', '$location', '$window', function ($rootScope, $location, $window) {
    var notificationTimeLine = {
        success: 10000,
        error: 20000
    }

    function instance() {
        var notificationTypes = {
            success: 'success',
            warning: 'warning',
            error: 'error',
            loading: 'loading'
        }
        var notificationElements = {
            stuckNotifications: [],
            alerts: []
        };
      
        var notifications = function (type, notificationList) {
            return {
                //arg: hasClose, isAutoHide, onDestroyed
                add: function (msg, arg) {
                    if (arg.isAutoHide == undefined) {
                        arg.isAutoHide = true;
                    }
                    if (arg.hasClose == undefined) {
                        arg.hasClose = true;
                    }
                    
                    var newNotification = {
                        type: type,
                        msg: msg,
                        isAutoHide: arg.isAutoHide,
                        hasClose: arg.hasClose,
                        senderScope:arg.senderScope,
	                    setNewText: function (newText) {
		                    this.msg = newText;
		                    var stuckMsgElement = angular.element("#" + this.notificationId);
		                    stuckMsgElement.text(this.msg);
	                    },
                        destroy: function (param) {
                            var index = notificationList.indexOf(this);
                            if (index != -1)
                                notificationList.splice(index, 1);
                            if (arg.onDestroyed != undefined) {
                                arg.onDestroyed(param);
                            }
                            newNotification = null;
                        },
                        notificationId: function () {
                        	return new Date().getTime();
                        }()
                        
                    }

                    notificationList.push(newNotification);
                    if (!$rootScope.$$phase) $rootScope.$apply();
                    if (arg.isAutoHide == true && (type == notificationTypes.success || type == notificationTypes.warning) && type != notificationTypes.loading) {
                        setTimeout(function () {
                            $rootScope.$apply(function () {
                                if (newNotification != null) {
                                    newNotification.destroy();
                                }
                            });
                        }, notificationTimeLine.success);
                    }
                    if (arg.isAutoHide == true && type == notificationTypes.error)
                    {
                        setTimeout(function () {
                            $rootScope.$apply(function () {
                                if (newNotification != null) {
                                    newNotification.destroy();
                                }
                            });
                        }, notificationTimeLine.error);
                    }
                    return newNotification;
                }
            }
        }

        return {
            alerts: {
                items: notificationElements.alerts,
                addLoading: notifications(notificationTypes.loading, notificationElements.alerts).add,
                addWarning: notifications(notificationTypes.warning, notificationElements.alerts).add,
                addSuccess: notifications(notificationTypes.success, notificationElements.alerts).add,
                addError: notifications(notificationTypes.error, notificationElements.alerts).add,
                clear: function () {
                    notificationElements.alerts.forEach(function (element, index) {
                        notificationElements.alerts.splice(index, 1);
                    });
                    if (!$rootScope.$$phase) $rootScope.$apply();
                }
            },
            stuckNotifications: {
                items: notificationElements.stuckNotifications,
                addLoading: notifications(notificationTypes.loading, notificationElements.stuckNotifications).add,
                addWarning: notifications(notificationTypes.warning, notificationElements.stuckNotifications).add,
                addSuccess: notifications(notificationTypes.success, notificationElements.stuckNotifications).add,
                addError: notifications(notificationTypes.error, notificationElements.stuckNotifications).add,
                clear: function () {
                    notificationElements.stuckNotifications.forEach(function (element, index) {
                        notificationElements.stuckNotifications.splice(index, 1);
                    });
                    if (!$rootScope.$$phase) $rootScope.$apply();
                }
            },
            type: notificationTypes
        }
    }

	function getUrlNotificationKey() {
		function getQueryParams(qs) {
			qs = qs.split('+').join(' ');

			var params = {},
				tokens,
				re = /[?&]?([^=]+)=([^&]*)/g;

			while (tokens = re.exec(qs)) {
				params[decodeURIComponent(tokens[1])] = decodeURIComponent(tokens[2]);
			}

			return params;
		}
		function removeParam(key, sourceUrl) {
			var rtn = sourceUrl.split("?")[0],
					param,
					paramsArr = [],
					queryString = (sourceUrl.indexOf("?") !== -1) ? sourceUrl.split("?")[1] : "";
			if (queryString !== "") {
				paramsArr = queryString.split("&");
				for (var i = paramsArr.length - 1; i >= 0; i -= 1) {
					param = paramsArr[i].split("=")[0];
					if (param === key) {
						paramsArr.splice(i, 1);
					}
				}
				if (paramsArr.length > 0) {
					rtn += "?" + paramsArr.join("&");
				}
				
			}
			return rtn;
		}
		var queryResult = getQueryParams(document.location.search);
		if (queryResult.notificationKey && history && history.replaceState) {
			var newurl = removeParam('notificationKey', $location.$$absUrl);
			$location.$$absUrl = newurl;
			$location.replace();
			history.replaceState(null, "", "");
		}
		return queryResult.notificationKey;
	}

	return {
	    notificationTimeLine: notificationTimeLine,
    	instance: instance,
    	getUrlNotificationKey: getUrlNotificationKey
    }

}]);;
app.service('popupWindow', ['$modal', 'sslRepository', '$window', '$location',

function ($modal, sslRepository, $window, $location) {

    function openPopupWindow(symantecCertificateDetails, actionName, symantecSunsetDate, siteServerNameUrl) {
        sslRepository.sslInfo.GetEquivalentComodoCertificateDetails(symantecCertificateDetails.certificateType, symantecCertificateDetails.validYears, symantecCertificateDetails.sansQty).then(function (comodoCertDetails) {
                $modal.open({
                    templateUrl: "/Domains/SSL/EquivalentComodoForSymantec",
                    controller: 'EquivalentComodoForSymantecCtrl',
                    size: 'lg',
                    backdrop: 'static',
                    resolve: {
                        symantecCertDetails: function () {
                            return symantecCertificateDetails;
                        },
                        comodoDetails: function () {
                            return comodoCertDetails;
                        },
                        actionName: function () {
                            return actionName;
                        },
                        symantecSunsetDate: function () {
                            return symantecSunsetDate;
                        },
                        siteServerNameUrl: function () {
                            return siteServerNameUrl;
                        }
                    }

               });
         });
    }

        function replaceOrRefund(value, action, certType) {
            $window.localStorage.setItem("isError", value.Error);
            $window.localStorage.setItem("Message", value.Msg);
            $window.localStorage.setItem("action", action);
            $window.localStorage.setItem("certType", certType);
        }

        var result = {
            isError: false,
            Message :'',
            action: '',
            symantecCertType: ''
        };
        var replaceOrRefundResult = function () {
            result.isError = $window.localStorage.getItem("isError");
            result.Message = $window.localStorage.getItem("Message");
            result.action = $window.localStorage.getItem("action");
            result.symantecCertType = $window.localStorage.getItem("certType");
            return result;
        }
            
        function redirectToPage() {
            var urlSplits = $location.absUrl().split('/');
            var domainName = urlSplits[urlSplits.length - 2];
            var alternatePageFrom = (urlSplits.length > 5) ? urlSplits[5] : urlSplits[urlSplits.length - 1];
            var pageFrom = urlSplits[urlSplits.length - 1];
            if (urlSplits[urlSplits.length - 1] == "") {
                domainName = urlSplits[urlSplits.length - 3]
                pageFrom = urlSplits[urlSplits.length - 2]
            }
            if (alternatePageFrom.toUpperCase() != 'PRODUCTPAGE') {
                if (pageFrom.toUpperCase() == 'DOMAINLIST')
                    $window.location.href = "/domains/domainlist/";
                else if (pageFrom.toUpperCase() == 'APPS')
                    $window.location.href = '/domains/domaincontrolpanel/' + domainName + '/' + pageFrom;
                else if (pageFrom.toUpperCase() == 'SSLCERTIFICATES')
                    $window.location.href = '/productList/sslcertificates';
                else if (pageFrom.toUpperCase() == 'PRODUCTS')
                    $window.location.href = '/domains/expiringlist/#/products';
                else 
                    $window.location.href = "/dashboard";
            }
            else {
                $window.location.href = '/domains/ssl/productpage/'+urlSplits[6]+'/'+domainName+'/'+pageFrom;
            }
        }

        return {
            openPopupWindow: openPopupWindow,
            replaceOrRefund: replaceOrRefund,
            replaceOrRefundResult: replaceOrRefundResult,
            redirectToPage: redirectToPage
           
        };

    }
]);;
app.service('pricing', [
	'httpRepository',
	'bulkHelper',
	function(httpRepository, bulkHelper) {
		return {
			loadHostingRenewPrices: loadHostingRenewPrices,
			loadPremiumDomainPrices: loadPremiumDomainPrices
		};

		function loadHostingRenewPrices(hostingIds, onPriceReceived) {
			return bulkHelper.waterfallAnPulse(hostingIds, function(hostingId) {
				return httpRepository.pricing.getHostingRenewPrice(hostingId);
			}, onPriceReceived);
		}

		function loadPremiumDomainPrices(domainNames, onPriceReceived) {
			return bulkHelper.waterfallAnPulse(domainNames, function(domainName) {
				return httpRepository.pricing.getPremiumDomainPrice(domainName);
			}, onPriceReceived)
		}
	}
]);
;
app.factory('sanitizeHtmlService', [function () {
	var entityMap = {
		"&": "&amp;",
		"<": "&lt;",
		">": "&gt;",
		'"': '&quot;',
		"'": '&#39;',
		"/": '&#x2F;'
	};
	return function (value) {
		return  String(value).replace(/[&<>"'\/]/g, function (s) {
			return entityMap[s];
		});
	}
}]);;
app.factory('sellDomainRepository', ['httpService', function (httpService) {
    var sellDomainFunctionVariable =
        {
            getSellDomainInfo: function (mplistingID) {
                return httpService.Post('/domains/GetSellDomainInfo/', { mplistingid: mplistingID })
            },
            insertSellDomainInfo: function (sellDomainInfoModel) {
                //String array value joint and retrun string value.
                if (sellDomainInfoModel.SelectedCategory != null && Object.prototype.toString.call(sellDomainInfoModel.SelectedCategory) === '[object Array]')
                    sellDomainInfoModel.SelectedCategory = sellDomainInfoModel.SelectedCategory.join(",")
                // Listing Id not Empty case Edit the sell domain
                if (sellDomainInfoModel.IsEditMode)
                    return httpService.Post('/domains/EditDomainOnMarketplaceListing/', { model: sellDomainInfoModel })
                else
                    return httpService.Post('/domains/AddDomainToMarketplaceListing/', { model: sellDomainInfoModel })


            },
            CancelMarketplace: function (password, listingid, domainname) {
                return httpService.Post('/domains/DeleteDomainFromMarketplaceListing/', { password: password, listingId: listingid, domainName: domainname })
            }
        }
    return {
        sellDomainInfo: sellDomainFunctionVariable
    }
