    }

    $scope.savecontactdetails = function (parameter) {
        var isformValid = false;
   
       
        $('#errorDisplaySingleContacts').hide();
        if ($scope.DomainContactsOverviewModel.ContactModificationType == 'Others') {
            isformValid = true;
            // ExtendAttributeInfo = $scope.ExtendedAttribute;
        }
        else {
            isformValid = $scope.ctrlfrmcontactedit.frmdomaineditcontacts.$valid;
            //  ExtendAttributeInfo = $scope.DomainContactsOverviewModel.DomainContactSectionViewModel.ExtendedAttributesInfo;
           getExtendAttribute($scope.DomainContactsOverviewModel.DomainContactSectionViewModel.ExtendedAttributesInfo);
        }
        var viewModel = $scope.DomainContactsOverviewModel
        if (isformValid) {          
            $scope.MoveNextClicked = true;
            //Convert data to json
            viewModel.ContactDetails = $scope.dmncontact;

            viewModel.UpdateRegistrantContact = $scope.copyApply.isRegistrant;
            viewModel.UpdateAdminContact = $scope.copyApply.isAdmin;
            viewModel.UpdateTechnicalContact = $scope.copyApply.isTec;
            viewModel.UpdateBillingContact = $scope.copyApply.isBill;
            viewModel.ExtendedAttributesInfo = $scope.ExtendedAttribute;
            var ExtendAttributeInfo = $scope.ExtendedAttribute;

            $('.loader').addClass('page-load').css({ 'text-align': 'left', 'padding': '0em', 'opacity': '0.5', 'background-position': 'center 4.5em' });          
            
            httpRepository.domainInfo.updateSingleContact(JSON.stringify(viewModel), JSON.stringify(ExtendAttributeInfo)).then(function (result) {
                var jsonRes = result;
                if (result.Error == true) {                 
                    $('#errorDisplaySingleContacts').show();
                   // $('.loader').delay(250).queue(function () {                       
                        $('.loader').removeClass('page-load').css({ 'text-align': 'left', 'padding': '0em', 'opacity': '0.9' });
                  //  });                    
                    $scope.contactEditErrMsg = result.Msg;
                }
                else {
                    if (parameter.indexOf('~') != -1) {
                        if (parameter.split('~')[0] == 'dcp') {
                            window.location.href = '/domains/domaincontrolpanel/' + parameter.split('~')[1] + '/domain';
                        }
                    }
                }
            });
            //viewModel. = $scope.copyApply.isRegistrant

            //Call Webmethod to save 

        }
        else {

            $('div.site-msg.has-close.error').show();
            $('#errorDisplaySingleContacts').hide();
        }
    }

}]);;
app.controller('contactslightboxWizardCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'ncWizardService',
