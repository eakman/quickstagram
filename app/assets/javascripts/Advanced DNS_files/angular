app.factory('geolocationService', ['httpService', '$q', function (httpService, $q) {
    var geocoder = new google.maps.Geocoder();
    var defer = $q.defer();

    function checkGeolocation(successFn, errorFn)
    {
        defer = $q.defer();
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(
                successFn || function () { defer.resolve({ isSupport: true }) },
                errorFn || function () { defer.resolve({ isSupport: false, Error: "Geocoder failed" }) }
                );
        }
        return defer.promise;
    }

    function fillAddressComponents(position)
    {
        var resultAddressComponent = {};
        if (position.coords != undefined) {
            var latlng = new google.maps.LatLng(position.coords.latitude, position.coords.longitude);
            geocoder.geocode({ 'latLng': latlng }, function (results, status) {
                if (status == google.maps.GeocoderStatus.OK) {
                    if (results[1]) {
                        //formatted address
                        resultAddressComponent.FullAddress = results[0].formatted_address;
                        //find country name
                        for (var i = 0; i < results[0].address_components.length; i++) {
