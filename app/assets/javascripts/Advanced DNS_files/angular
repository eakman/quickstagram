            $scope.asiaOtherIdentFormVisible = false;
        }
    }

    $scope.CALegalTypeChange = function (caLegalType) {
        //alert(caLegalType);
        var registranttypes = '[CCT][RES][ABO][LGR]';
        if (registranttypes.indexOf('[' + caLegalType + ']') !== -1) {
            $scope.caCiraWhoisVisible = true;
        }
        else {
            $scope.caCiraWhoisVisible = false;
        }
    }

    $scope.USNexusChange = function (usNexusType) {
        //alert(caLegalType);
        var usNexusTypes = '[C31][C32]';
        if (usNexusTypes.indexOf('[' + usNexusType + ']') !== -1) {
            $scope.usNexusCountryVisible = true;
        }
        else {
            $scope.usNexusCountryVisible = false;
        }
    }

    //.UK Tld's
    $scope.UKLegalTypeChange = function (ukLegalType) {

        //Hiding/Showing Company ID No textbox
        if (ukLegalType != "LTD" && ukLegalType != "PLC" && ukLegalType != "LLP" && ukLegalType != "RCHAR" && ukLegalType != "SCH") {
            $scope.ukCompanyIDVisible = false;
        }
        else {
            $scope.ukCompanyIDVisible = true;
        }
        //Hiding/Showing whois dropdown
        var ukLegalTypes = '[IND][FIND]';
        if (ukLegalTypes.indexOf('[' + ukLegalType + ']') !== -1) {
            $scope.ukWhoisVisible = true;
        }
        else {
            $scope.ukWhoisVisible = false;
        }
    }

    //.CO.UK Tld's
    $scope.COUKLegalTypeChange = function (ukLegalType) {

        //Hiding/Showing Company ID No textbox
        if (ukLegalType != "LTD" && ukLegalType != "PLC" && ukLegalType != "LLP" && ukLegalType != "RCHAR" && ukLegalType != "SCH") {
            $scope.coukCompanyIDVisible = false;
        }
        else {
            $scope.coukCompanyIDVisible = true;
        }
        //Hiding/Showing whois dropdown
        var ukLegalTypes = '[IND][FIND]';
        if (ukLegalTypes.indexOf('[' + ukLegalType + ']') !== -1) {
            $scope.coukWhoisVisible = true;
        }
        else {
            $scope.coukWhoisVisible = false;
        }
    }
    //ME.UK Tld's
    $scope.MEUKLegalTypeChange = function (ukLegalType) {

        //Hiding/Showing Company ID No textbox
        if (ukLegalType != "LTD" && ukLegalType != "PLC" && ukLegalType != "LLP" && ukLegalType != "RCHAR" && ukLegalType != "SCH") {
            $scope.meukCompanyIDVisible = false;
        }
        else {
            $scope.meukCompanyIDVisible = true;
        }
        //Hiding/Showing whois dropdown
        var ukLegalTypes = '[IND][FIND]';
        if (ukLegalTypes.indexOf('[' + ukLegalType + ']') !== -1) {
            $scope.meukWhoisVisible = true;
        }
        else {
            $scope.meukWhoisVisible = false;
        }
    }
    //ORG.UK Tld's
    $scope.ORGUKLegalTypeChange = function (ukLegalType) {

        //Hiding/Showing Company ID No textbox
        if (ukLegalType != "LTD" && ukLegalType != "PLC" && ukLegalType != "LLP" && ukLegalType != "RCHAR" && ukLegalType != "SCH") {
            $scope.orgukCompanyIDVisible = false;
        }
        else {
            $scope.orgukCompanyIDVisible = true;
        }
        //Hiding/Showing whois dropdown
        var ukLegalTypes = '[IND][FIND]';
        if (ukLegalTypes.indexOf('[' + ukLegalType + ']') !== -1) {
            $scope.orgukWhoisVisible = true;
        }
        else {
            $scope.orgukWhoisVisible = false;
        }
    }

    $scope.loadingNotification = new notificationService.instance();
    function Loader() {
        $scope.notificationLoader = new pageHelper.AsyncStateBehavior(
              {
                  constructor: function () {

                      var instance = this.instance;
                      $scope.IsItemChosen = true;
                      $scope.loadingNotification.alerts.clear();
                      instance.activeNotification = $scope.loadingNotification.stuckNotifications.addLoading('<B>Loading.</B> Please wait..', false);
                      instance.asyncStatus(pageHelper.AsyncStatus.Success);
                  },
                  onSuccess: function () {

                      $scope.IsLoadingCompleted = true;
                      var instance = this.instance;
                      instance.asyncStatus(pageHelper.AsyncStatus.Active);

                  },
                  onActive: function () {

                  }
              })
    }

    $scope.show = false;
    $scope.regshow = false;
    $scope.admshow = false;
    $scope.techshow = false;
    $scope.billshow = false;

    $scope.companyName = false;
    $scope.jobTitle = false;


    $scope.regClear = function () {
        if (!$scope.regcontact.company) {
            $scope.regcontact.Organization = "";
            $scope.regcontact.JobTitle = "";
            $scope.regshow = false;
        }
        if ($scope.regcontact.company) {
            $scope.regshow = true;
        }
    }

    $scope.admClear = function () {
        if (!$scope.admcontact.company) {
            $scope.admcontact.Organization = "";
            $scope.admcontact.JobTitle = "";
            $scope.admshow = false;
        }
        if ($scope.admcontact.company) {
            $scope.admshow = true;
        }
    }

    $scope.techClear = function () {
        if (!$scope.teccontact.company) {
            $scope.teccontact.Organization = "";
            $scope.teccontact.JobTitle = "";
            $scope.techshow = false;
        }
        if ($scope.teccontact.company) {
            $scope.techshow = true;
        }
    }

    $scope.billClear = function () {
        if ($scope.billcontact.company) {
            $scope.billcontact.Organization = "";
            $scope.billcontact.JobTitle = "";
            $scope.billshow = false;
        }
        if ($scope.billcontact.company) {
            $scope.billshow = true;
        }
    }

    //Reg
    $scope.$watchCollection(function () {
        if (!$scope.regcontact.company)
            return (!$scope.regcontact.company);
    }, function () {
        if ($scope.regcontact.company) {
            $scope.regcompanyName = false;
            $scope.regjobTitle = false;
            $scope.regshow = true;
        }
    }, true);


    $scope.regPhnExt = false;
    $scope.$watchCollection(function () {
        if (!$scope.regcontact.PhoneExtCheckBox)
            return (!$scope.regcontact.PhoneExtCheckBox);
    }, function () {
        if ($scope.regcontact.PhoneExtCheckBox) {
            $scope.regPhnExt = false;
        }
    }, true);

    $scope.regcompanyName = false;
    $scope.regjobTitle = false;
    $scope.$watchCollection(function () {
        if ($scope.regcontact.Organization)
            return ($scope.regcontact.Organization);
    }, function () {
        var companyNameLength = $("#CompanyName").val().length;
        if (companyNameLength == 0) {
            $scope.regcompanyName = true;
        }
    }, true);

    $scope.$watchCollection(function () {
        if ($scope.regcontact.JobTitle)
            return ($scope.regcontact.JobTitle);
    }, function () {
        var jobTitleLength = $("#JobTitle").val().length;
        if (jobTitleLength == 0) {
            $scope.regjobTitle = true;
        }
    }, true);

    //Admin
    $scope.$watchCollection(function () {
        if (!$scope.admcontact.company)
            return (!$scope.admcontact.company);
    }, function () {
        if ($scope.admcontact.company) {
            $scope.admcompanyName = false;
            $scope.admjobTitle = false;
            $scope.admshow = true;
        }
    }, true);


    $scope.admPhnExt = false;
    $scope.$watchCollection(function () {
        if (!$scope.admcontact.PhoneExtCheckBox)
            return (!$scope.admcontact.PhoneExtCheckBox);
    }, function () {
        if ($scope.admcontact.PhoneExtCheckBox) {
            $scope.admPhnExt = false;
        }
    }, true);

    $scope.admcompanyName = false;
    $scope.admjobTitle = false;
    $scope.$watchCollection(function () {
        if ($scope.admcontact.Organization)
            return ($scope.admcontact.Organization);
    }, function () {
        var admCompanyNameLength = $("#CompanyName").val().length;
        if (admCompanyNameLength == 0) {
            $scope.admcompanyName = true;
        }
    }, true);

    $scope.$watchCollection(function () {
        if ($scope.admcontact.JobTitle)
            return ($scope.admcontact.JobTitle);
    }, function () {
        var admJobTitleLength = $("#JobTitle").val().length;
        if (admJobTitleLength == 0) {
            $scope.admjobTitle = true;
        }
    }, true);

    //Tech
    $scope.$watchCollection(function () {
        if (!$scope.teccontact.company)
            return (!$scope.teccontact.company);
    }, function () {
        if ($scope.teccontact.company) {
            $scope.techcompanyName = false;
            $scope.techjobTitle = false;
            $scope.techshow = true;
        }
    }, true);


    $scope.techPhnExt = false;
    $scope.$watchCollection(function () {
        if (!$scope.teccontact.PhoneExtCheckBox)
            return (!$scope.teccontact.PhoneExtCheckBox);
    }, function () {
        if ($scope.teccontact.PhoneExtCheckBox) {
            $scope.techPhnExt = false;
        }
    }, true);

    $scope.techcompanyName = false;
    $scope.techjobTitle = false;
    $scope.$watchCollection(function () {
        if ($scope.teccontact.Organization)
            return ($scope.teccontact.Organization);
    }, function () {
        var techCompanyNameLength = $("#CompanyName").val().length;
        if (techCompanyNameLength == 0) {
            $scope.techcompanyName = true;
        }
    }, true);

    $scope.$watchCollection(function () {
        if ($scope.regcontact.JobTitle)
            return ($scope.regcontact.JobTitle);
    }, function () {
        var techJobTitleLength = $("#JobTitle").val().length;
        if (techJobTitleLength == 0) {
            $scope.techjobTitle = true;
        }
    }, true);

    //Bill

    $scope.$watchCollection(function () {
        if (!$scope.billcontact.company)
            return (!$scope.billcontact.company);
    }, function () {
        if ($scope.billcontact.company) {
            $scope.billcompanyName = false;
            $scope.billjobTitle = false;
            $scope.billshow = true;
        }
    }, true);


    $scope.billPhnExt = false;
    $scope.$watchCollection(function () {
        if (!$scope.billcontact.PhoneExtCheckBox)
            return (!$scope.billcontact.PhoneExtCheckBox);
    }, function () {
        if ($scope.billcontact.PhoneExtCheckBox) {
            $scope.regPhnExt = false;
        }
    }, true);

    $scope.billcompanyName = false;
    $scope.billjobTitle = false;
    $scope.$watchCollection(function () {
        if ($scope.billcontact.Organization)
            return ($scope.billcontact.Organization);
    }, function () {
        var billCompanyNameLength = $("#CompanyName").val().length;
        if (billCompanyNameLength == 0) {
            $scope.billcompanyName = true;
        }
    }, true);

    $scope.$watchCollection(function () {
        if ($scope.billcontact.JobTitle)
            return ($scope.billcontact.JobTitle);
    }, function () {
        var billJobTitleLength = $("#JobTitle").val().length;
        if (billJobTitleLength == 0) {
            $scope.billjobTitle = true;
        }
    }, true);

    //In Step 1- For Cancelling Dynamic Site Msg
    $scope.$watchCollection(function () {
        if ($scope.selectedDomains && $('input:checkbox[name=confirmselecteddomains]:checked'))
            return ($scope.selectedDomains && $('input:checkbox[name=confirmselecteddomains]:checked'));
    }, function () {
        if (($scope.selectedDomains == 0) || ($('input:checkbox[name=confirmselecteddomains]:checked').length == 0))
            $scope.MoveNextClicked = false;
    }, true);


    $scope.$watchCollection(function () {
        if ($scope.ctrlfrmreg.frmdomainregistrantcontacts)
            return $scope.ctrlfrmreg.frmdomainregistrantcontacts;
    }, function () {
        if ($scope.ctrlfrmreg.frmdomainregistrantcontacts) {
            if (($scope.ctrlfrmreg.frmdomainregistrantcontacts.$invalid == true)) {

                $scope.MoveNextClicked = false;
            }
        }
    }, true);

    $scope.$watchCollection(function () {
        if ($scope.ctrladmin.frmdomainadmincontacts)
            return $scope.ctrladmin.frmdomainadmincontacts;
    }, function () {
        if ($scope.ctrladmin.frmdomainadmincontacts)
            if (($scope.ctrladmin.frmdomainadmincontacts.$invalid == true))
                $scope.MoveNextClicked = false;
    }, true);



    $scope.$watchCollection(function () {
        if ($scope.ctrlfrmtechnical.frmdomaintechnicalcontacts)
            return $scope.ctrlfrmtechnical.frmdomaintechnicalcontacts;
    }, function () {
        if ($scope.ctrlfrmtechnical.frmdomaintechnicalcontacts)
            if (($scope.ctrlfrmtechnical.frmdomaintechnicalcontacts.$invalid == true))
                $scope.MoveNextClicked = false;
        //else
        // $scope.MoveNextClicked(true);
    }, true);


    $scope.$watchCollection(function () {
        if ($scope.ctrlfrmbilling.frmdomainbillingcontacts)
            return $scope.ctrlfrmbilling.frmdomainbillingcontacts;
    }, function () {
        if ($scope.ctrlfrmbilling.frmdomainbillingcontacts)
            if (($scope.ctrlfrmbilling.frmdomainbillingcontacts.$invalid == true))
                $scope.MoveNextClicked = false;
    }, true);


    ncWizardService.moveBack = function () {

        var wizardIndex = ncWizardService.getCurrentStepIndex() - 1;
        if (wizardIndex == 2) {
            if ($scope.regshow)
                $scope.regshow = true;
        }
        if (wizardIndex == 3) {
            if ($scope.admshow)
                $scope.admshow = true;
        }
        if (wizardIndex == 4) {
            if ($scope.techshow)
                $scope.techshow = true;
        }
        if (wizardIndex == 5) {
            if ($scope.billshow)
                $scope.billshow = true;
        }
        //  ncWizardService.moveBack();
        if (!this.canMoveBack())
            return;
        this.moveTo(wizardIndex);
    }

    $scope.Next = function () {
        $scope.regcompanyName = true;
        $scope.regjobTitle = true;
        $scope.admcompanyName = true;
        $scope.admjobTitle = true;
        $scope.techcompanyName = true;
        $scope.techjobTitle = true;
        $scope.billcompanyName = true;
        $scope.billjobTitle = true;

        $scope.contactinvalid = false;        

        var wizardIndex = ncWizardService.getCurrentStepIndex();

        var isformValid1 = $scope.ctrlfrmreg.frmdomainregistrantcontacts != undefined ? $scope.ctrlfrmreg.frmdomainregistrantcontacts.$valid : false;
        var isformValid2 = $scope.ctrladmin.frmdomainadmincontacts != undefined ? $scope.ctrladmin.frmdomainadmincontacts.$valid : false;
        var isformValid3 = $scope.ctrlfrmtechnical.frmdomaintechnicalcontacts != undefined ? $scope.ctrlfrmtechnical.frmdomaintechnicalcontacts.$valid : false;
        var isformValid4 = $scope.ctrlfrmbilling.frmdomainbillingcontacts != undefined ? $scope.ctrlfrmbilling.frmdomainbillingcontacts.$valid : false;
        var isformValid5 = $scope.ctrlfrmextended.frmExtendedAttribute != undefined ? $scope.ctrlfrmextended.frmExtendedAttribute.$valid : false;

        var DomainNameCSV = "";
        var checkedDomainsCSV = "";
        var tlds = '[XXX][CA][US][ASIA][UK][CO.UK][ME.UK][ORG.UK]';
        var hasExtendedAttributeTld = false;
        var hasOnlyExtendedAttributeTld = true;
        if ($scope.regcontact.company && $scope.copyApply.isRegtoAdmin) {
            $scope.admshow = true;
        }

        if ($scope.admcontact.company && $scope.copyApply.isAdmintoTec) {
            $scope.techshow = true;
        }

        if ($scope.teccontact.company && $scope.copyApply.isTectoBill) {
            $scope.billshow = true;
        }



        var viewModel = $scope.DomainContactsViewModel;
        switch (wizardIndex) {
            case 1:
                var loader = Loader();
                $scope.contactinvalid = false;                
                $scope.SelectedDomainList = [];
                if ($('input:checkbox[name=selecteddomains]:checked').length == 0 || $('input:checkbox[name=confirmselecteddomains]:checked').length == 0) {
                    $('div.site-msg.has-close.list.error').show();
                    return;
                }
                // Assigning checked domains to the list
                $('input:checkbox[name=selecteddomains]:checked').each(function () {
                    var domainListItem = {};
                    domainListItem.DomainName = $(this).attr('id');
                    var IndexofDot = domainListItem.DomainName.indexOf(".");
                    domainListItem.tld = domainListItem.DomainName.substr(IndexofDot + 1);

                    if (domainListItem.tld == 'de') {
                        $('div.site-msg.de.info').show();
                    }

                    if (domainListItem.tld == 'xxx' || domainListItem.tld == 'us' || domainListItem.tld == 'ca' || domainListItem.tld == 'asia' || domainListItem.tld == 'uk' || domainListItem.tld == 'co.uk' || domainListItem.tld == 'me.uk' || domainListItem.tld == 'org.uk')
                        hasExtendedAttributeTld = true;
                    else
                        hasOnlyExtendedAttributeTld = false;

                    var isExist = false;
                    var domainList = $scope.SelectedDomainList;
                    for (i = 0; i < domainList.length; i++) {
                        if (domainList[i].tld == domainListItem.tld) {
                            isExist = true;
                        }

                    }
                    checkedDomainsCSV = checkedDomainsCSV + $(this).attr('id') + ",";
                    if (!isExist) {
                        $scope.SelectedDomainList.push(domainListItem)
                        //DomainNames CSV
                        DomainNameCSV = DomainNameCSV + $(this).attr('id') + ",";
                    }

                });

                var jsonTldProperties = $scope.DomainContactsViewModel.BulkModificationStep1ViewModel;                
                var tldArr = checkedDomainsCSV.split(',');

                for (key in jsonTldProperties) {
                    var isExists = false;
                    for (var i = 0; i < tldArr.length; i++) {
                        var sdf = jsonTldProperties[key]['DomainName'];
                        if (jsonTldProperties.hasOwnProperty(key) && jsonTldProperties[key]['DomainName'] == tldArr[i]) {
                            // delete json[key];
                            isExists = true;
                        }

                    }
                    if (!isExists && key != "sortOn") {
                        delete jsonTldProperties[key];
                        //jsonTldProperties.splice(key, 1);
                    }

                }
                $scope.jsonTldProperties = jsonTldProperties;

                if (hasExtendedAttributeTld == true) {
                    if (ncWizardService.steps.length == 5)
                        ncWizardService.steps.length = ncWizardService.steps.length + 1;
                }
                else {
                    if (ncWizardService.steps.length == 6)
                        ncWizardService.steps.length = ncWizardService.steps.length - 1;
                }

                $scope.MoveNextClicked = false;
                ncWizardService.moveNext();
                break;
            case 2:
                var loader = Loader();
                $scope.contactinvalid = false;                
                if (isformValid1) {
                    viewModel.DomainContactSectionView.RegistrantContactDetails = $scope.regcontact;
                    ncWizardService.moveNext();
                    $scope.MoveNextClicked = false;

                    if ($scope.copyApply.isRegtoAdmin) {
                        angular.copy($scope.regcontact, $scope.admcontact);
                        viewModel.DomainContactSectionView.AdminContactDetails = $scope.admcontact;
                        ncWizardService.moveNext();
                    }
                    if ($scope.copyApply.isAdmintoTec) {
                        angular.copy($scope.regcontact, $scope.teccontact);
                        if ($scope.copyApply.isRegtoAdmin) {
                            viewModel.DomainContactSectionView.TechContactDetails = $scope.teccontact;
                            ncWizardService.moveNext();
                        }
                    }
                    if ($scope.copyApply.isTectoBill) {
                        angular.copy($scope.regcontact, $scope.billcontact);
                        if ($scope.copyApply.isRegtoAdmin && $scope.copyApply.isAdmintoTec)
                            viewModel.DomainContactSectionView.BillingContactDetails = $scope.billcontact;
                            ncWizardService.moveNext();
                    }
                    return;
                }
                else {
                    $('div.site-msg.has-close.reg.error').show();

                    var error = $scope.ctrlfrmreg.frmdomainregistrantcontacts.$error;
                    angular.forEach(error.required, function (field) {
                        if (field.$invalid) {
                            var fieldName = field.$name;
                            $("input[name=" + field.$name + "]").focus();
                        }
                    });
                    var error = $scope.ctrlfrmreg.frmdomainregistrantcontacts.$error;
                    angular.forEach(error.pattern, function (field) {
                        if (field.$invalid) {
                            var fieldName = field.$name;
                            $("input[name=" + field.$name + "]").focus();
                        }
                    });

                    //$scope.MoveNextClicked = false;
                }
                //$scope.MoveNextClicked = false;
                break;
            case 3:
                var loader = Loader();
                $scope.contactinvalid = false;                
                // $scope.MoveNextClicked = true;
                if (isformValid2) {
                    viewModel.DomainContactSectionView.AdminContactDetails = $scope.admcontact;
                    ncWizardService.moveNext();
                    $scope.MoveNextClicked = false;
                    if ($scope.copyApply.isAdmintoTec) {
                        angular.copy($scope.admcontact, $scope.teccontact);
                        viewModel.DomainContactSectionView.TechContactDetails = $scope.teccontact;
                        ncWizardService.moveNext();
                    }
                    if ($scope.copyApply.isTectoBill) {
                        angular.copy($scope.admcontact, $scope.billcontact);
                        if ($scope.copyApply.isAdmintoTec)
                            viewModel.DomainContactSectionView.BillingContactDetails = $scope.billcontact;
                            ncWizardService.moveNext();
                    }
                    return;
                }

                else {

                    $('div.site-msg.has-close.adm.error').show();
                    var error = $scope.ctrladmin.frmdomainadmincontacts.$error;
                    angular.forEach(error.required, function (field) {
                        if (field.$invalid) {
                            var fieldName = field.$name;
                            $("input[name=" + field.$name + "]").focus();
                        }
                    });
                    var error = $scope.ctrladmin.frmdomainadmincontacts.$error;
                    angular.forEach(error.pattern, function (field) {
                        if (field.$invalid) {
                            var fieldName = field.$name;
                            $("input[name=" + field.$name + "]").focus();
                        }
                    });

                }
                break;
            case 4:
                var loader = Loader();
                $scope.contactinvalid = false;                
                if (isformValid3) {
                    viewModel.DomainContactSectionView.TechContactDetails = $scope.teccontact;

                    ncWizardService.moveNext();
                    $scope.MoveNextClicked = false;

                    $('input:checkbox[name=selecteddomains]:checked').each(function () {
                        var domainListItem = {};
                        domainListItem.DomainName = $(this).attr('id');
                        var IndexofDot = domainListItem.DomainName.indexOf(".");
                        domainListItem.tld = domainListItem.DomainName.substr(IndexofDot + 1);

                        if (domainListItem.tld == 'xxx' || domainListItem.tld == 'us' || domainListItem.tld == 'ca' || domainListItem.tld == 'asia' || domainListItem.tld == 'uk' || domainListItem.tld == 'co.uk' || domainListItem.tld == 'me.uk' || domainListItem.tld == 'org.uk') {
                            hasExtendedAttributeTld = true;
                            $scope.IsNextButton = true;
                        }
                        else
                            hasOnlyExtendedAttributeTld = false;
                    });

                    if (hasExtendedAttributeTld == false && hasOnlyExtendedAttributeTld == false)



                        if ($scope.copyApply.isTectoBill) {
                            angular.copy($scope.teccontact, $scope.billcontact);
                            viewModel.DomainContactSectionView.BillingContactDetails = $scope.billcontact;
                            ncWizardService.moveNext();
                        }
                    return;
                }
                else {
                    $('div.site-msg.has-close.tec.error').show();
                    var error = $scope.ctrlfrmtechnical.frmdomaintechnicalcontacts.$error;
                    angular.forEach(error.required, function (field) {
                        if (field.$invalid) {
                            var fieldName = field.$name;
                            $("input[name=" + field.$name + "]").focus();
                        }
                    });
                    var error = $scope.ctrlfrmtechnical.frmdomaintechnicalcontacts.$error;
                    angular.forEach(error.pattern, function (field) {
                        if (field.$invalid) {
                            var fieldName = field.$name;
                            $("input[name=" + field.$name + "]").focus();
                        }
                    });
                }

                break;
            case 5:
                var loader = Loader();
                $scope.contactinvalid = false;                
                if (isformValid4) {
                    var ValidateTld = false;
                    viewModel.DomainContactSectionView.BillingContactDetails = $scope.billcontact;

                    ncWizardService.moveNext();
                    $scope.MoveNextClicked = false;
                    //Need to be implement before going to ExtendedAtttribute view                 

                    for (var i = 0; i < $scope.SelectedDomainList.length; i++) {
                        if (tlds.indexOf('[' + $scope.SelectedDomainList[i].tld.toUpperCase() + ']') !== -1) {
                            $scope.ValidateTld = true;
                            ValidateTld = true;
                        }
                        else {
                            $scope.ValidateTld = false;
                        }
                    }

                    if (!ValidateTld) {
                        //ncWizardService.moveBack();
                        // $scope.SaveClick();
                        $scope.DomainContactsViewModel.BulkModificationStep1ViewModel = $scope.jsonTldProperties;
                        var viewModel = $scope.DomainContactsViewModel;
                        var ExtendedAttributeList = "";
                        viewModel.ExtendedAttributeList = $scope.ExtendedAttribute;
                        httpRepository.domainInfo.updateContact(JSON.stringify(viewModel), JSON.stringify(ExtendedAttributeList)).then(function (result) {
                            var jsonRes = result;
                            if (jsonRes.isRedirect) {
                                window.location.href = jsonRes.redirectUrl;
                            }
                            else {
                                $scope.contactinvalid = true;
                                $scope.errorMsg = jsonRes.Msg;
                                $scope.ctrlfrmbilling.frmdomainbillingcontacts.$invalid = true;
                                return;
                            }
                        });
                        return false;
                    }
                    return;
                }
                else {
                    $('div.site-msg.has-close.bill.error').show();
                    var error = $scope.ctrlfrmbilling.frmdomainbillingcontacts.$error;
                    angular.forEach(error.required, function (field) {
                        if (field.$invalid) {
                            var fieldName = field.$name;
                            $("input[name=" + field.$name + "]").focus();
                        }
                    });
                    var error = $scope.ctrlfrmbilling.frmdomainbillingcontacts.$error;
                    angular.forEach(error.pattern, function (field) {
                        if (field.$invalid) {
                            var fieldName = field.$name;
                            $("input[name=" + field.$name + "]").focus();
                        }
                    });
                }

                break;
            default:
                return;
        }
    }

    $scope.openChooseExtendedAttributeModalPopUp = function (tld) {
        var modalInstance = $modal.open({
            templateUrl: "/Domains/ChooseExtendedModal/",
            controller: 'ChooseExtendedAttributeCtrl',
            size: 'lg',
            backdrop: 'static',
        });

        modalInstance.result.then(function (model) {
            if (tld == "asia") {
                $scope.ExtendedAttribute.AsiaExtendedAttributesInfo.ContactType = model.AsiaContactType;
                $scope.ExtendedAttribute.AsiaExtendedAttributesInfo.LegalEntityType = model.AsiaLegalEntityType;
                $scope.ExtendedAttribute.AsiaExtendedAttributesInfo.City = model.AsiaCity;
            }
            else if (tld == "nu") {
                $scope.ExtendedAttribute.NUExtendedAttributesInfo.OrgNo = model.NUOrgNo;
                $scope.ExtendedAttribute.NUExtendedAttributesInfo.VatNo = model.NUVatNo;
            }
            else if (tld == "xxx") {
                $scope.ExtendedAttribute.XXXExtendedAttributesInfo.MemberId = model.XXXMemberId;
            }
            else if (tld == "ca") {
                $scope.ExtendedAttribute.CAExtendedAttributesInfo.CIRAWhois = model.CIRAWhois;
                $scope.ExtendedAttribute.CAExtendedAttributesInfo.CIRALanguage = model.CIRALanguage;
                $scope.ExtendedAttribute.CAExtendedAttributesInfo.CIRAType = model.CIRAType;
            }
            else if (tld == "us") {
                $scope.ExtendedAttribute.USExtendedAttributesInfo.RegistrantNex = RegistrantNex
                $scope.ExtendedAttribute.USExtendedAttributesInfo.RegistrantNexusCountry = RegistrantNexusCountry
                $scope.ExtendedAttribute.USExtendedAttributesInfo.RegistrantPurpose = RegistrantPurpose
            }
        });
    }

    $scope.openChooseContactModalPopUp = function () {
        if ($('#maincontent').length) {
            $('#maincontent').addClass('disabled-content async-processing');
        }
        var requestFrom = ncWizardService.getCurrentStepIndex();
        var modalInstance = $modal.open({
            templateUrl: "/Domains/ChooseAddressContact/",
            controller: 'ChooseContactModalCtrl',
            size: 'lg',
            backdrop: 'static',
        });

        modalInstance.result.then(function (model) {
            if (model != '') {
                if (requestFrom == 2) {
                    $scope.regcontact.FirstName = model.FirstName;
                    $scope.regcontact.LastName = model.LastName;
                    if ((model.Organization != '') || (model.JobTitle != '')) {
                        $scope.show = true;
                        $scope.regcontact.company = true;
                    }
                    if (model.Organization == '' || model.JobTitle == '') {
                        $scope.show = false;
                        $scope.regcontact.company = false;
                    }
                    $scope.regcontact.Organization = model.Organization;
                    $scope.regcontact.JobTitle = model.JobTitle;
                    $scope.regcontact.Address1 = model.Address1;
                    $scope.regcontact.Address2 = model.Address2;
                    $scope.regcontact.City = model.City;
                    $scope.regcontact.StateProvince = model.StateProvince;
                    $scope.regcontact.PostalCode = model.PostalCode;
                    var ddlCountryRegistrantMax = $('form[name="ctrlfrmreg.frmdomainregistrantcontacts"] select#RegistrantContactCountry');
                    if (ddlCountryRegistrantMax.length) {
                        ddlCountryRegistrantMax.select2("val", model.Country)
                        $scope.Country = model.Country;
                        $scope.regcontact.Country = model.Country;
                    }
                    if (model.Phone.indexOf('.') != -1) {

                        $scope.regcontact.Phone = model.Phone.split('.')[1];
                    }
                    if ($scope.regcontact.PhoneNumberExt != undefined)
                        $scope.regcontact.PhoneNumberExt = model.PhoneExt;
                    if (model.Fax.indexOf('.') != -1) {

                        $scope.regcontact.Fax = model.Fax.split('.')[1];
                    }
                    if (model.PhoneExt != '') {
                        $scope.regcontact.PhoneExt = model.PhoneExt;
                        $scope.regcontact.PhoneExtCheckBox = true;
                        //$(".phone.phnumber").addClass("has-extension");                        
                    }
                    $scope.regcontact.EmailAddress = model.EmailAddress;

                    var ddlPhoneCodeRegistrantMax = $('form[name="ctrlfrmreg.frmdomainregistrantcontacts"] select#RegistrantPhone');
                    if (ddlPhoneCodeRegistrantMax.length) {
                        if (model.Phone.indexOf('.') != -1) {

                            ddlPhoneCodeRegistrantMax.select2("val", model.Phone.split('.')[0].replace(/\+/g, ""))
                            $scope.regcontact.PhoneCode = model.Phone.split('.')[0].replace(/\+/g, "");
                        }
                    }
                    var ddlFaxCodeRegistrantMax = $('form[name="ctrlfrmreg.frmdomainregistrantcontacts"] select#FaxNumber');
                    if (ddlFaxCodeRegistrantMax.length) {
                        if (model.Fax.indexOf('.') != -1) {

                            ddlFaxCodeRegistrantMax.select2("val", model.Fax.split('.')[0].replace(/\+/g, ""))
                            $scope.regcontact.FaxExt = model.Fax.split('.')[0].replace(/\+/g, "");
                        }
                    }
                }
                if (requestFrom == 3) {
                    $scope.admcontact.FirstName = model.FirstName;
                    $scope.admcontact.LastName = model.LastName;
                    if ((model.Organization != '') || (model.JobTitle != '')) {
                        $scope.show = true;
                        $scope.admcontact.company = true;
                    }
                    if (model.Organization == '' || model.JobTitle == '') {
                        $scope.show = false;
                        $scope.admcontact.company = false;
                    }
                    $scope.admcontact.Organization = model.Organization;
                    $scope.admcontact.JobTitle = model.JobTitle;
                    $scope.admcontact.Address1 = model.Address1;
                    $scope.admcontact.Address2 = model.Address2;
                    $scope.admcontact.City = model.City;
                    $scope.admcontact.StateProvince = model.StateProvince;
                    $scope.admcontact.PostalCode = model.PostalCode;
                    var ddlCountryAdminMax = $('form[name="ctrladmin.frmdomainadmincontacts"] select#AdminContactCountry');
                    if (ddlCountryAdminMax.length) {
                        ddlCountryAdminMax.select2("val", model.Country)
                        $scope.Country = model.Country;
                        $scope.admcontact.Country = model.Country;
                    }
                    if (model.Phone.indexOf('.') != -1) {

                        $scope.admcontact.Phone = model.Phone.split('.')[1];
                    }
                    $scope.admcontact.PhoneNumberExt = model.PhoneExt;
                    if (model.Fax.indexOf('.') != -1) {

                        $scope.admcontact.Fax = model.Fax.split('.')[1];
                    }
                    if (model.PhoneExt != '') {
                        $scope.admcontact.PhoneExt = model.PhoneExt;
                        $scope.admcontact.PhoneExtCheckBox = true;
                        //$(".phone.phnumber").addClass("has-extension");
                    }
                    $scope.admcontact.EmailAddress = model.EmailAddress;

                    var ddlPhoneCodeAdminMax = $('form[name="ctrladmin.frmdomainadmincontacts"] select#AdminContactPhone');
                    if (ddlPhoneCodeAdminMax.length) {
                        if (model.Phone.indexOf('.') != -1) {

                            ddlPhoneCodeAdminMax.select2("val", model.Phone.split('.')[0].replace(/\+/g, ""))
                            $scope.admcontact.PhoneCode = model.Phone.split('.')[0].replace(/\+/g, "");
                        }
                    }
                    var ddlFaxCodeAdminMax = $('form[name="ctrladmin.frmdomainadmincontacts"] select#FaxNumber');
                    if (ddlFaxCodeAdminMax.length) {
                        if (model.Fax.indexOf('.') != -1) {

                            ddlFaxCodeAdminMax.select2("val", model.Fax.split('.')[0].replace(/\+/g, ""))
                            $scope.admcontact.FaxExt = model.Fax.split('.')[0].replace(/\+/g, "");
                        }
                    }
                }


                if (requestFrom == 4) {
                    $scope.teccontact.FirstName = model.FirstName;
                    $scope.teccontact.LastName = model.LastName;
                    if ((model.Organization != '') || (model.JobTitle != '')) {
                        $scope.show = true;
                        $scope.teccontact.company = true;
                    }
                    if (model.Organization == '' || model.JobTitle == '') {
                        $scope.show = false;
                        $scope.teccontact.company = false;
                    }
                    $scope.teccontact.Organization = model.Organization;
                    $scope.teccontact.JobTitle = model.JobTitle;
                    $scope.teccontact.Address1 = model.Address1;
                    $scope.teccontact.Address2 = model.Address2;
                    $scope.teccontact.City = model.City;
                    $scope.teccontact.StateProvince = model.StateProvince;
                    $scope.teccontact.PostalCode = model.PostalCode;
                    var ddlCountryTechMax = $('form[name="ctrlfrmtechnical.frmdomaintechnicalcontacts"] select#TechContactCountry');
                    if (ddlCountryTechMax.length) {
                        ddlCountryTechMax.select2("val", model.Country)
                        $scope.Country = model.Country;
                        $scope.teccontact.Country = model.Country;
                    }
                    if (model.Phone.indexOf('.') != -1) {

                        $scope.teccontact.Phone = model.Phone.split('.')[1];
                    }
                    $scope.teccontact.PhoneNumberExt = model.PhoneExt;
                    if (model.Fax.indexOf('.') != -1) {

                        $scope.teccontact.Fax = model.Fax.split('.')[1];
                    }
                    if (model.PhoneExt != '') {
                        $scope.teccontact.PhoneExt = model.PhoneExt;
                        $scope.teccontact.PhoneExtCheckBox = true;
                        //$(".phone.phnumber").addClass("has-extension");
                    }
                    $scope.teccontact.EmailAddress = model.EmailAddress;

                    var ddlPhoneCodeTechMax = $('form[name="ctrlfrmtechnical.frmdomaintechnicalcontacts"] select#TechContactPhone');
                    if (ddlPhoneCodeTechMax.length) {
                        if (model.Phone.indexOf('.') != -1) {

                            ddlPhoneCodeTechMax.select2("val", model.Phone.split('.')[0].replace(/\+/g, ""))
                            $scope.teccontact.PhoneCode = model.Phone.split('.')[0].replace(/\+/g, "");
                        }
                    }
                    var ddlFaxCodeTechMax = $('form[name="ctrlfrmtechnical.frmdomaintechnicalcontacts"] select#FaxNumber');
                    if (ddlFaxCodeTechMax.length) {
                        if (model.Fax.indexOf('.') != -1) {

                            ddlFaxCodeTechMax.select2("val", model.Fax.split('.')[0].replace(/\+/g, ""))
                            $scope.teccontact.FaxExt = model.Fax.split('.')[0].replace(/\+/g, "");
                        }
                    }
                }
                if (requestFrom == 5) {

                    $scope.billcontact.FirstName = model.FirstName;
                    $scope.billcontact.LastName = model.LastName;
                    if ((model.Organization != '') || (model.JobTitle != '')) {
                        $scope.show = true;
                        $scope.billcontact.company = true;
                    }
                    if (model.Organization == '' || model.JobTitle == '') {
                        $scope.show = false;
                        $scope.billcontact.company = false;
                    }
                    $scope.billcontact.Organization = model.Organization;
                    $scope.billcontact.JobTitle = model.JobTitle;
                    $scope.billcontact.Address1 = model.Address1;
                    $scope.billcontact.Address2 = model.Address2;
                    $scope.billcontact.City = model.City;
                    $scope.billcontact.StateProvince = model.StateProvince;
                    $scope.billcontact.PostalCode = model.PostalCode;
                    var ddlCountryBillinghMax = $('form[name="ctrlfrmbilling.frmdomainbillingcontacts"] select#BillingContactCountry');
                    if (ddlCountryBillinghMax.length) {
                        ddlCountryBillinghMax.select2("val", model.Country)
                        $scope.Country = model.Country;
                        $scope.billcontact.Country = model.Country;
                    }
                    if (model.Phone.indexOf('.') != -1) {

                        $scope.billcontact.Phone = model.Phone.split('.')[1];
                    }
                    $scope.billcontact.PhoneNumberExt = model.PhoneExt;
                    if (model.Fax.indexOf('.') != -1) {

                        $scope.billcontact.Fax = model.Fax.split('.')[1];
                    }
                    if (model.PhoneExt != '') {
                        $scope.billcontact.PhoneExt = model.PhoneExt;
                        $scope.billcontact.PhoneExtCheckBox = true;
                        //$(".phone.phnumber").addClass("has-extension");
                    }
                    $scope.billcontact.EmailAddress = model.EmailAddress;

                    var ddlPhoneCodeBillingMax = $('form[name="ctrlfrmbilling.frmdomainbillingcontacts"] select#BillingContactPhone');
                    if (ddlPhoneCodeBillingMax.length) {
                        if (model.Phone.indexOf('.') != -1) {

                            ddlPhoneCodeBillingMax.select2("val", model.Phone.split('.')[0].replace(/\+/g, ""))
                            $scope.billcontact.PhoneCode = model.Phone.split('.')[0].replace(/\+/g, "");
                        }
                    }
                    var ddlFaxCodeBillingMax = $('form[name="ctrlfrmbilling.frmdomainbillingcontacts"] select#FaxNumber');
                    if (ddlFaxCodeBillingMax.length) {
                        if (model.Fax.indexOf('.') != -1) {

                            ddlFaxCodeBillingMax.select2("val", model.Fax.split('.')[0].replace(/\+/g, ""))
                            $scope.billcontact.FaxExt = model.Fax.split('.')[0].replace(/\+/g, "");
                        }
                    }
                }

            }
        });
    }

