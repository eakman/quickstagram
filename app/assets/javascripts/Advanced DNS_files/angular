        else if (newValue[1] == "") {
            $group5.Host = "";
            $scope.formMailSettings.Host5 = "";
            $scope.formMailSettings.Priority5 = "";
            $scope.group5.show = false;
        }
        else if (newValue[2] == "") {
            $group5.MailServer = "";
            $scope.formMailSettings.Host5 = "";
            $scope.formMailSettings.Priority5 = "";
            $scope.group5.show = false;
        }
    }, true);

    $scope.$watch('[mxe.RecordName,mxe.IPAddress]', function (newValue, oldValue) {
        $scope.SaveClicked = false;
        if (newValue[0] == "") {
            $scope.mxe.RecordName = "";
            $scope.formMailSettings.IPAddress = "";
            $scope.mxe.show = false;
        }
        else if (newValue[1] == "") {
            $scope.mxe.IPAddress = "";
            $scope.formMailSettings.RecordName = "";
            $scope.mxe.show = false;
        }
    }, true);



    //Manage MailSettings Area



}]);;
app.controller('domainsMailSettingCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'ncGridEventNames', '$location',
function ($scope, $rootScope, httpRepository, $filter, $modal, notificationService, pageHelper, $q, ncGridParams, $sce, ncGridEventNames, $location) {

    //var domainDnsCtrlObject = $controller('domainsdnsCtrl');

    $scope.SaveClicked = false;
    $scope.formMailSettings = {};
    var domainName = $location.absUrl().split('/').pop();
    $scope.HostCount = 0;
    $scope.pageHelper = pageHelper;//for call helpers methods from view
    $scope.pageNotification = new notificationService.instance();   
    $scope.mailSettingsTTL = [{ name: 'Automatic', value: '1799' }, { name: '1 minute', value: '60' }, { name: '5 minute', value: '300' }, { name: '20 minute', value: '1200' }, { name: '30 minute', value: '1800' }, { name: '60 minute', value: '3600' }];

    $scope.group1 = {};
    $scope.group2 = {};
    $scope.group3 = {};
    $scope.group4 = {};
    $scope.group5 = {};
    $scope.mxe = {};


    $scope.mailOptionTypeList = [
            { name: 'No Email Service', value: 'no_email' },
            { name: 'Email Forwarding', value: 'email_forwarding' },
            { name: 'Custom MX', value: 'custom_mx' },            
            { name: 'MXE', value: 'mxe' },
            { name: 'Private Email', value: 'private_email' },
            { name: 'Gmail', value: 'gmail' }];

    var mailOptionType = {
        no_email:false,
        email_forwarding: false,
        custom_mx: false,
        mxe: false,        
        private_email: false,
        gmail: false        
    }

    $scope.mailOptionType = mailOptionType;

    $scope.mailsettings = { MailTypes : "no_email" }

    $scope.DnsHostRecordListViewModel = {}

    $scope.mailSettingsPageBehavior = new pageHelper.AsyncStateBehavior({

        constructor: function () {
            var instance = this.instance;
            instance.showLoadPanel = true;
            instance.showContent = false;
            instance.model = null;
            instance.pageNgGridSettings = new ncGridParams();
            instance.pageNgGridSettings.settings.getData = function ($defer, ncGridState) {
                instance.filterStatusPropertyNames = [];
                instance.filterFlagsPropertyNames = [];
                httpRepository.domainDns.getEmailForwardingDefaultList(ncGridState).then(function (result) {
                    var dataLength = 0;
                    if (result.Result != null && result.Result.Data != null) {
                        if (result.Msg != '') {
                            instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(result.Msg,
                            {
                                hasClose: true,
                                isAutoHide: true
                            });
                        }
                        dataLength = result.Result.Data.length;
                        $scope.HostCount = dataLength;
                        for (var i = 0; i < dataLength; i++) {
                            result.Result.Data[i].chbId = "chbId" + i;
                        }
                        instance.pageNgGridSettings.parameters.mapping.isLazyLoading = instance.pageNgGridSettings.parameters.mapping.serverChunkSize <= result.Result.Data.length;
                        $defer.resolve(result.Result);
                        instance.model = instance.pageNgGridSettings.parameters.storage.requestData;

                    }
                    else {
                        instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(result.Msg, {
                            hasClose: true,
                            isAutoHide: true
                        });
                    }

                });
            }
            instance.pageNgGridSettings.settings.reload();

            instance.asyncStatus(pageHelper.AsyncStatus.Success);
        },
        onSuccess: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;
        },
        onLoading: function (params) {
            var instance = this.instance;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });

    $scope.resetToDefault = function () {
        mailOptionType.no_email = false;
        mailOptionType.email_forwarding = false;
        mailOptionType.custom_mx = false;
        mailOptionType.mxe = false;
        mailOptionType.gmail = false;
        mailOptionType.private_email = false;
    }

    $scope.mailOptionChange = function(mailType)
    {
        if(mailType == $scope.mailOptionTypeList[0].value)
        {
            $scope.resetToDefault();
            mailOptionType.no_email = true;
        }
        else if(mailType == $scope.mailOptionTypeList[1].value)
        {
            $scope.resetToDefault();
            mailOptionType.email_forwarding = true;            
        }
        else if (mailType == $scope.mailOptionTypeList[2].value) {
            $scope.resetToDefault();
            mailOptionType.custom_mx = true;
        }
        else if (mailType == $scope.mailOptionTypeList[3].value) {
            $scope.resetToDefault();
            mailOptionType.mxe = true;
        }
        else if (mailType == $scope.mailOptionTypeList[4].value) {
            $scope.resetToDefault();
            mailOptionType.private_email = true;
        }
        else if (mailType == $scope.mailOptionTypeList[5].value) {
            $scope.resetToDefault();
            mailOptionType.gmail = true;
        }
        if (mailType == $scope.mailOptionTypeList[0].value) {
            $scope.resetToDefault();
            mailOptionType.no_email = true;
        }
    }

   
    $scope.SaveHostRecords = function()
    {
        //var data = $scope.hostRecord;
        //var hostRecordList = [{}];
        var hostType = "";
        switch($scope.mailsettings.MailTypes)
        {
            case $scope.mailOptionTypeList[0].value:
                //set no email service
                hostType = "NONE";
                break;
            case $scope.mailOptionTypeList[1].value:
                //set default email forwarding
                hostType = "FWD";
                break;
            case $scope.mailOptionTypeList[2].value:
                //set Custom mx               
               
                hostType = "MX";
                $scope.DnsHostRecordListViewModel = { HostList1: $scope.group1, HostList2: $scope.group2, HostList3: $scope.group3, HostList4: $scope.group4, HostList5: $scope.group5 };               
                break; 
            case $scope.mailOptionTypeList[3].value:
                //set MXE
                hostType = "MXE";
                $scope.DnsHostRecordListViewModel = {MxeInfo :$scope.mxe };                
                break;
            case $scope.mailOptionTypeList[4].value:
                //Set Private email
                hostType = "OX";
                break;
            case $scope.mailOptionTypeList[5].value:
                //set gamil settings                
                hostType = "GMAIL";
                break;
        }
        if ($scope.formMailSettings.$valid) {
            httpRepository.domainDns.setEmailType(domainName, hostType, JSON.stringify($scope.DnsHostRecordListViewModel)).then(function (result) {
                var jsonRes = result;
                if(jsonRes.isredirect)
                    window.location.href = jsonRes.redirecturl + '/' + domainName;                
            });
        }
    }

    //$scope.$watch('[MailServer1,Host1,Priority1,MailServer2,Host2,Priority2,MailServer3,Host3,Priority3,MailServer4,Host4,Priority4,MailServer5,Host5,Priority5]', function (newValue, oldValue)
    $scope.$watch('[group1.Host,group1.MailServer,group1.Priority]', function (newValue, oldValue)
    {
        $scope.SaveClicked = false;
        if(newValue[0] == "")
        {
            $group1.MailServer = "";
            $scope.formMailSettings.MailServer1 = "";
            $scope.formMailSettings.Priority1 = "";
            $scope.group1.show = false;
        }
        else if (newValue[1] == "") {
            $group1.Host = "";
            $scope.formMailSettings.Host1 = "";
            $scope.formMailSettings.Priority1 = "";
            $scope.group1.show = false;
        }
        else if (newValue[2] == "") {
            $group1.MailServer = "";
            $scope.formMailSettings.Host1 = "";
            $scope.formMailSettings.Priority1 = "";
            $scope.group1.show = false;
        }     
    }, true);


    $scope.$watch('[group2.Host,group2.MailServer,group2.Priority]', function (newValue, oldValue) {
        $scope.SaveClicked = false;
        if (newValue[0] == "") {
            $group2.MailServer = "";
            $scope.formMailSettings.MailServer2 = "";
            $scope.formMailSettings.Priority2 = "";
            $scope.group2.show = false;
        }
        else if (newValue[1] == "") {
            $group2.Host = "";
            $scope.formMailSettings.Host2 = "";
            $scope.formMailSettings.Priority2 = "";
            $scope.group2.show = false;
        }
        else if (newValue[2] == "") {
            $group2.MailServer = "";
            $scope.formMailSettings.Host2 = "";
            $scope.formMailSettings.Priority2= "";
            $scope.group2.show = false;
        }
    }, true);


    $scope.$watch('[group3.Host,group3.MailServer,group3.Priority]', function (newValue, oldValue) {
        $scope.SaveClicked = false;
        if (newValue[0] == "") {
            $group3.MailServer = "";
            $scope.formMailSettings.MailServer3 = "";
            $scope.formMailSettings.Priority3 = "";
            $scope.group3.show = false;
        }
        else if (newValue[1] == "") {
            $group3.Host = "";
            $scope.formMailSettings.Host3 = "";
            $scope.formMailSettings.Priority3 = "";
            $scope.group3.show = false;
        }
        else if (newValue[2] == "") {
            $group3.MailServer = "";
            $scope.formMailSettings.Host3 = "";
            $scope.formMailSettings.Priority3 = "";
            $scope.group3.show = false;
        }
    }, true);

    $scope.$watch('[group4.Host,group4.MailServer,group4.Priority]', function (newValue, oldValue) {
        $scope.SaveClicked = false;
        if (newValue[0] == "") {
            $group4.MailServer = "";
            $scope.formMailSettings.MailServer4 = "";
            $scope.formMailSettings.Priority4 = "";
            $scope.group4.show = false;
        }
        else if (newValue[1] == "") {
            $group4.Host = "";
            $scope.formMailSettings.Host4 = "";
            $scope.formMailSettings.Priority4 = "";
            $scope.group4.show = false;
        }
        else if (newValue[2] == "") {
            $group4.MailServer = "";
            $scope.formMailSettings.Host4 = "";
            $scope.formMailSettings.Priority4 = "";
            $scope.group4.show = false;
        }
    }, true);

    $scope.$watch('[group5.Host,group5.MailServer,group5.Priority]', function (newValue, oldValue) {
        $scope.SaveClicked = false;
        if (newValue[0] == "") {
            $group5.MailServer = "";
            $scope.formMailSettings.MailServer5 = "";
            $scope.formMailSettings.Priority5 = "";
            $scope.group5.show = false;
        }
        else if (newValue[1] == "") {
            $group5.Host = "";
            $scope.formMailSettings.Host5 = "";
            $scope.formMailSettings.Priority5 = "";
            $scope.group5.show = false;
        }
        else if (newValue[2] == "") {
            $group5.MailServer = "";
            $scope.formMailSettings.Host5 = "";
            $scope.formMailSettings.Priority5 = "";
            $scope.group5.show = false;
        }
    }, true);

    $scope.$watch('[mxe.RecordName,mxe.IPAddress]', function (newValue, oldValue) {
        $scope.SaveClicked = false;
        if (newValue[0] == "") {
            $mxe.RecordName = "";
            $scope.formMailSettings.IPAddress = "";            
            $scope.mxe.show = false;
        }
        else if (newValue[1] == "") {
            $mxe.IPAddress = "";
            $scope.formMailSettings.RecordName = "";            
            $scope.mxe.show = false;
        }        
    }, true);

}]);;
app.controller('domainsPersonalNsCtrl', ['$scope', '$rootScope', 'httpRepository', 'domainname', '$filter', '$modal', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'ncGridEventNames',
function ($scope, $rootScope, httpRepository, domainname, $filter, $modal, notificationService, pageHelper, $q, ncGridParams, $sce, ncGridEventNames) {
    $scope.HostCount = 0;
    $scope.pageHelper = pageHelper;//for call helpers methods from view
    $scope.pageNotification = new notificationService.instance();
    $scope.DomainDnsInfoValidation = DomainDnsInfoRes;
    $scope.ManageDomainNameServerInfo = {};
    $scope.EditNameServerInfo = {};


    $rootScope.closeLightbox = function () {
        window.location.href = '/Domains/DomainControlPanel/' + domainname + '/advancedns';
    }

    //Bulk Delete handler
    $scope.bulkDeleteHandler = function (actionToPerform) {
        var Nameserver = [];
        var domainName = '';
        var data = $scope.pageBehavior.pageNgGridSettings.parameters.selection.selectedItems;
        var selectedIndex = 0;
        for (i = 0; i < data.length; i++) {
            if (i == 0)
                domainName = Nameserver[selectedIndex] = data[i].Domain;
            Nameserver[selectedIndex] = data[i].Nameserver;
            selectedIndex++;
        }
        //$scope.pageAction.Click(domainName, Nameserver.join(","), actionToPerform, true);
    }

    //Edit Handler   
    $scope.IsEditNameServerModalPopUpOpened = false;
    $scope.openEditNameServerModalPopUp = function (domainName, nameServer, oldIp, index) {

        if (!$scope.IsEditNameServerModalPopUpOpened)
        {
            var modalInstance = $modal.open({
                templateUrl: "/Domains/Dns/NameServerEditPopUp",
                controller: 'NameserverEditCtrl',
                size: 'lg',
                backdrop: 'static',
                resolve: {
                    sectionViewModal: function () {
                        $scope.EditNameServerInfo.DomainName = domainName;
                        $scope.EditNameServerInfo.Nameserver = nameServer;
                        $scope.EditNameServerInfo.OldIp = oldIp;
                        $scope.EditNameServerInfo.Index = index;
                        return $scope.EditNameServerInfo;
                    }
                }
            });

            modalInstance.result.then(function (model) {
                $scope.IsEditNameServerModalPopUpOpened = false;
                if (model != 'cancel' && model != null) {
                    $scope.pageBehavior.pageNgGridSettings.parameters.storage.pageData[model.Index].IP = model.IP;
                    $scope.pageNotification.alerts.clear();
                    modalInstance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainDnsInfoValidation.static_UpdateDynamicSuccessMessage, {
                        hasClose: true,
                        isAutoHide: true
                    });
                }
            });

            modalInstance.opened.then(function () {
                $scope.IsEditNameServerModalPopUpOpened = true;
            });
        }

    }

    //Delete Marketplace Listing Call popup
    $scope.IsChooseNSListingModalPopUpOpened = false;
    $scope.openChooseNSListingModalPopUp = function (nameServer, domain, actionToPerform) {
        var isBulkAction = false;
        if (!$scope.IsChooseNSListingModalPopUpOpened)
        {
            var activeModalInstance = $modal.open({
                templateUrl: "/Domains/SSL/Common/PromptRemove",
                controller: 'promptRemoveModalCtrl',
                size: 'lg',
                resolve: {
                    modalTitle: function () {
                        if (actionToPerform.toLowerCase() == 'multiremove')
                            return $scope.DomainDnsInfoValidation.static_MultiRemoveTitle;
                        else
                            return $scope.DomainDnsInfoValidation.static_SingleRemoveTitle;
                    },
                    modalContent: function () {
                        if (actionToPerform.toLocaleLowerCase() == 'multiremove') {
                            isBulkAction = true;
                            return $scope.DomainDnsInfoValidation.static_MultiRemovePromptIntro;
                        }
                        else {
                            isBulkAction = false;
                            return $scope.DomainDnsInfoValidation.static_SingleRemovePromptIntro;
                        }
                    }
                }
            });
            activeModalInstance.result.then(function (msg) {
                $scope.IsChooseNSListingModalPopUpOpened = false;
                if (msg == 'yes') {
                    if (actionToPerform.toLowerCase() == 'multiremove') {
                        var Nameserver = [];
                        var domainName = '';
                        var data = $scope.pageBehavior.pageNgGridSettings.parameters.selection.selectedItems;
                        var selectedIndex = 0;
                        for (i = 0; i < data.length; i++) {
                            if (i == 0)
                                domainName = Nameserver[selectedIndex] = data[i].Domain;
                            Nameserver[selectedIndex] = data[i].Nameserver;
                            selectedIndex++;
                        }
                        $scope.pageAction.Click(domainName, Nameserver.join(","), actionToPerform, true);
                    }
                    else if (actionToPerform.toLowerCase() == 'remove') {
                        $scope.pageAction.Click(domain, nameServer, actionToPerform, false);
                    }
                }
                //when user click 
            }, function () {
                // any result
                activeModalInstance = null;
            });
            activeModalInstance.opened.then(function () {
                $scope.IsChooseNSListingModalPopUpOpened = true;
            });
        }

    }

    //Bulk Action Click Eeent Handler
    $scope.pageAction = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            var loadingMessage = '';
            var splitNameServers = '';
            instance.Click = function (domainName, Nameservers, actionToPerform, isBulkAction) {
                var splitnameServers
                if (Nameservers.indexOf(",") >= 0) {
                    splitNameServers = Nameservers.split(',');
                }
                else {
                    splitNameServers = Nameservers;
                }
                if (splitNameServers != null && Object.prototype.toString.call(splitNameServers) === '[object Array]')
                {
                    if (actionToPerform == 'multiremove' || actionToPerform == 'remove') {
                        $scope.isMultiple = true;
                        if (isBulkAction == true)
                            loadingMessage = $scope.DomainDnsInfoValidation.loading_Dynamic_RemoveMultiple;
                        else
                            loadingMessage = $scope.DomainDnsInfoValidation.loading_Dynamic_RemoveSingle;
                        instance.asyncStatus(pageHelper.AsyncStatus.Loading, loadingMessage);                       
                        for (var count = 0; count < splitNameServers.length; count++)
                        {
                            $scope.RemoveNameServerOnebyOne(domainName, splitNameServers[count],instance);                           
                        }
                    }
                }
                else if (splitNameServers != '') {
                    if (actionToPerform == 'multiremove' || actionToPerform == 'remove') {
                        if (isBulkAction == true)
                            loadingMessage = $scope.DomainDnsInfoValidation.loading_Dynamic_RemoveMultiple;
                        else
                            loadingMessage = $scope.DomainDnsInfoValidation.loading_Dynamic_RemoveSingle;
                        httpRepository.domainDns.NameServerDelete(domainName, splitNameServers).then(
                              function (res) {
                                  var result = res.Result;
                                  var failedNameservers = '';
                                  if (result != null) {
                                      //Result List match to ncGrid item. matched item remove ncgrid page\
                                      $scope.pageNotification.stuckNotifications.clear();
                                      if (result.IsSuccess == false) {
                                          $scope.pageNotification.stuckNotifications.addError($scope.DomainDnsInfoValidation.static_DeleteDynamicErrorMessage.replace("{NSServer}", result.Nameserver.toString()), {
                                              hasClose: true,
                                              isAutoHide: true
                                          });
                                      }
                                      else {
                                          var nsModel = $scope.pageBehavior.pageNgGridSettings.parameters.storage.requestData;
                                          var removeItem = nsModel.filter(function (obj) {
                                              return obj.Nameserver == result.Nameserver;
                                          })
                                          for (var removecount = 0 ; removecount < removeItem.length; removecount++) {
                                              $scope.pageBehavior.pageNgGridSettings.settings.actions.removeItem(removeItem[removecount]);

                                              $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainDnsInfoValidation.static_DeleteDynamicSuccessMessage.replace("{NSServer}", removeItem[removecount].Nameserver), {
                                                  hasClose: true,
                                                  isAutoHide: true
                                              });
                                          }
                                      }
                                      if ($scope.pageBehavior.pageNgGridSettings.parameters.storage.pageData.length == 0) {
                                          $scope.pageBehavior.pageNgGridSettings.settings.pagination.setNextPage();
                                          $scope.pageBehavior.pageNgGridSettings.settings.pagination.setPreviousPage();
                                      }
                                      if (isBulkAction == true)
                                          $scope.uncheckCheckBoxes();
                                  }
                                  ////Trim Of First Comma                          
                                  //failedNameservers = failedNameservers.replace(/^,|,$/g, '');
                                  //if (failedNameservers != '')
                                  //    instance.asyncStatus(pageHelper.AsyncStatus.Error, { Message: $scope.DomainDnsInfoValidation.static_DeleteDynamicErrorMessage.replace("{NSServer}", failedNameservers), sender: 'getModal', Result: $scope.pageBehavior });
                                  if (res.Result == null && res.Error == true) {
                                      $scope.pageNotification.stuckNotifications.addError(res.Msg, {
                                          hasClose: true,
                                          isAutoHide: true
                                      });
                                  }

                              });
                    }
                }
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            if (params.sender == 'getModel') {
                instance.showContent = true;
                instance.model = params.Result;
                instance.pageNgGridSettings.settings.reload();
            }
            $scope.pageNotification.alerts.clear();
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(params.Message, {
                hasClose: true,
                isAutoHide: true
            });
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onLoading: function (params) {
            var instance = this.instance;
            $scope.pageNotification.alerts.clear();
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('<B>' + params + '</B> Please wait.', false);
            instance.isDisabled = true;
            instance.showError = false;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Message, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });

    $scope.RemoveNameServerOnebyOne = function (domainName, NameServer,asyncInstance) {
        httpRepository.domainDns.NameServerDelete(domainName, NameServer).then(
                         function (res) {
                             var result = res.Result;
                             if (result != null)
                             {
                                 //Result List match to ncGrid item. matched item remove ncgrid page
                                // $scope.pageNotification.stuckNotifications.clear();
                                 if (result.IsSuccess == false)
                                 {
                                     asyncInstance.asyncStatus(pageHelper.AsyncStatus.Error);
                                     $scope.pageNotification.stuckNotifications.addError($scope.DomainDnsInfoValidation.static_DeleteDynamicErrorMessage.replace("{NSServer}", result.Nameserver.toString()), {
                                         hasClose: true,
                                         isAutoHide: true
                                     });
                                 }
                                 else
                                 {

                                     var nsModel = $scope.pageBehavior.pageNgGridSettings.parameters.storage.requestData;
                                     var removeItem = nsModel.filter(function (obj) {
                                         return obj.Nameserver == result.Nameserver;
                                     })
                                     for (var removecount = 0 ; removecount < removeItem.length; removecount++)
                                     {
                                         asyncInstance.asyncStatus(pageHelper.AsyncStatus.Success);
                                         $scope.pageBehavior.pageNgGridSettings.settings.actions.removeItem(removeItem[removecount]);
                                         $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainDnsInfoValidation.static_DeleteDynamicSuccessMessage.replace("{NSServer}", removeItem[removecount].Nameserver), {
                                             hasClose: true,
                                             isAutoHide: true
                                         });
                                     }
                                 }
                                 if ($scope.pageBehavior.pageNgGridSettings.parameters.storage.pageData.length == 0) {
                                     $scope.pageBehavior.pageNgGridSettings.settings.pagination.setNextPage();
                                     $scope.pageBehavior.pageNgGridSettings.settings.pagination.setPreviousPage();
                                 }
                                 if (isBulkAction == true)
                                     $scope.uncheckCheckBoxes();
                             }
                             if (res.Result == null && res.Error == true)
                             {
                                 asyncInstance.asyncStatus(pageHelper.AsyncStatus.Error);
                                 $scope.pageNotification.stuckNotifications.addError(res.Msg, {
                                     hasClose: true,
                                     isAutoHide: true
                                 });
                             }
                         });
    }


    $scope.uncheckCheckBoxes = function () {
        $scope.pageBehavior.pageNgGridSettings.parameters.selection.selectedItems = [];
        var data = $scope.pageBehavior.pageNgGridSettings.parameters.storage.requestData;
        for (i = 0; i < data.length; i++)
            if (data[i].$ncColumnSelected == true)
                data[i].$ncColumnSelected = false;
        $('div#chb_selectAllNameServer').find('input[type="checkbox"]').removeAttr('checked');
    }

    $scope.pageBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.showLoadPanel = true;
            instance.showContent = false;

            instance.model = null;

            instance.pageNgGridSettings = new ncGridParams();
            instance.pageNgGridSettings.parameters.search.serchPropertyNames = ['Nameserver', 'IP'];
            instance.pageNgGridSettings.parameters.mapping.isLazyLoading = false;
            instance.pageNgGridSettings.settings.getData = function ($defer, ncGridState) {
                var domainName = $("input[type='hidden']#domainName").val();
                var searchkey = $("input[type='hidden']#searchkey").val();
                instance.filterStatusPropertyNames = [];
                instance.filterFlagsPropertyNames = [];
                //httpRepository.domainDns.getHostRecordList(ncGridState, isOverViewPage).then(function (result) {
                httpRepository.domainDns.getInfoList(ncGridState, domainName, searchkey).then(function (result) {
                    var dataLength = 0;
                    if (result.Result != null && result.Result.Data != null) {
                        if (result.Msg != '') {
                            instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(result.Msg, {
                                hasClose: true,
                                isAutoHide: true
                            });
                        }
                        dataLength = result.Result.Data.length;
                        $scope.HostCount = dataLength;
                        for (var i = 0; i < dataLength; i++) {
                            result.Result.Data[i].chbId = "chbId" + i;
                        }
                        instance.pageNgGridSettings.parameters.mapping.isLazyLoading = instance.pageNgGridSettings.parameters.mapping.serverChunkSize <= result.Result.Data.length;
                        $defer.resolve(result.Result);
                        instance.model = instance.pageNgGridSettings.parameters.storage.requestData;
                    }
                    else {
                        instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(result.Msg, {
                            hasClose: true,
                            isAutoHide: true
                        });
                    }
                });
            }
            instance.pageNgGridSettings.settings.reload();
            instance.asyncStatus(pageHelper.AsyncStatus.Success);
        },
        onSuccess: function (params) {
            var instance = this.instance;
            //instance.model = $scope.AssignCssClassForFields(params.Result.Data);
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;

        },
        onLoading: function (params) {
            var instance = this.instance;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });
}]);;
app.controller('NameserverEditCtrl', ['$scope', '$modalInstance', 'httpRepository', 'pageHelper', '$timeout', 'notificationService', '$filter', '$document', 'sectionViewModal',
function ($scope, $modalInstance, httpRepository, pageHelper, $timeout, notificationService, $filter, $document, sectionViewModal) {
    $scope.HostCount = 0;
    $scope.pageHelper = pageHelper;//for call helpers methods from view
    $scope.NameServerEditModel = sectionViewModal;
    $scope.pageNotification = new notificationService.instance();
    $scope.pageNotificationAruguement = { isAutoHide: true, hasClose: true }
    $scope.nameServerPageBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.showLoadPanel = true;
            instance.showContent = false;
            instance.click = function () {
                instance.asyncStatus(pageHelper.AsyncStatus.Loading)
                httpRepository.domainDns.getNameServerInfo($scope.NameServerEditModel.DomainName, $scope.NameServerEditModel.Nameserver).then(function (result) {
                    result.sender = "getNSInfo";
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                });
            }
            instance.save = function () {
                if ($scope.nameServerPageBehavior != undefined) {
                    if (!$scope.ctrlFrmPopUpPersonalDNS.frmEditPersonalDNS.$invalid) {

                        instance.asyncStatus(pageHelper.AsyncStatus.Loading)
                        //$modalInstance.close($scope.nameServerPageBehavior.model);
                        if (instance.model.OldIP == instance.model.IP) {
                            $scope.pageNotification.alerts.clear();
                            $scope.pageNotification.alerts.addError("The original IP and new IP are the same. Please specify a new IP", $scope.pageNotificationAruguement);
                            return;
                        }
                        httpRepository.domainDns.updateNameServerInfo(instance.model.Domain, instance.model.Nameserver, instance.model.OldIP, instance.model.IP).then(function (result) {
                            result.sender = "updateNSInfo";
                            instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                            //if (result.Error == true) {
                            //    $scope.pageNotification.alerts.clear();
                            //    $scope.pageNotification.alerts.addError(result.Msg, $scope.pageNotificationAruguement);
                            //    //$modalInstance.asyncStatus(pageHelper.AsyncStatus.Error, { msg: result.Msg });
                            //}
                            //else {
                            //    $scope.pageNotification.alerts.clear();
                            //    $scope.pageNotification.alerts.addSuccess(result.Msg, $scope.pageNotificationAruguement);
                            //}
                        });
                    }
                }
                else
                    $scope.IsItemChosen = false;
            }
            instance.cancel = function () {
                $modalInstance.dismiss('cancel');
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            if (params.sender == 'getNSInfo') {
                instance.model = params.Result;
                instance.model.Domain = params.Result.Domain;
                instance.model.IP = params.Result.IP;
                instance.model.OldIP = $scope.NameServerEditModel.OldIp;
                instance.model.Nameserver = params.Result.Nameserver;
                instance.model.Index = $scope.NameServerEditModel.Index;
                //instance.showContent = true;                
            }
            else if (params.sender == "updateNSInfo") {
                $modalInstance.close($scope.nameServerPageBehavior.model);
            }
            //instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
            //instance.showLoadPanel = false;
            //instance.showContent = true;

        },
        onLoading: function (params) {
            var instance = this.instance;
            //$scope.pageNotification.stuckNotifications.addLoading("Loading...", false);
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            //instance.showLoadPanel = false;
            instance.showErrors = true;
            //$modalInstance.asyncStatus(pageHelper.AsyncStatus.Error, { msg: params.Msg });
            $scope.pageNotification.alerts.addError(params.Msg, { hasClose: true, isAutoHide: true });
        }
    });
    $scope.nameServerPageBehavior.click();

}]);;
app.controller('removeHostRecordctrl', ['$scope', '$modalInstance', '$document','RecordId','RecordType',
function ($scope, $modalInstance, $document, RecordId,RecordType) {
    $scope.HostId = RecordId;
    $scope.RecordType = RecordType;
    
    $scope.ConfirmRemoveHostRecord = function () {
        var result = {
            HostId: $scope.HostId,
            RemoveStatus: $scope.removeStatus == 1 ? "Disable" : "Remove",
            RecordType: $scope.RecordType
        }
        
        $modalInstance.close(result);
    }

    $scope.cancelClick = function () {
        console.log("Dismiss Modal with model : " + $scope.modalpopupcontrollerValue);
        $modalInstance.close('');
    };
   
}]);;
app.controller('domainTransferAuthorizeModalCtrlObsolete', ['$scope', '$rootScope', 'httpRepository', 'pageHelper', 'notificationService', '$filter', '$modalInstance', '$document', 'modalInteraction',
function ($scope, $rootScope, httpRepository, pageHelper, notificationService, $filter, $modalInstance, $document, modalInteraction) {

	$scope.pageHelper = pageHelper;
    $scope.pageNotification = new notificationService.instance();

    $scope.modalBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
        	var instance = this.instance;

        	instance.model = {};
	        instance.model.domainName = modalInteraction.domainName;

            instance.activeNotification = new notificationService.instance();
            instance.asyncStatus(pageHelper.AsyncStatus.Success);

	        instance.isAuthCodeEmpty = function() {
		        return (this.model.authCode || '') == '';
	        };

	        instance.isAuthCodeInvalid = function() {
	        	var authCode = this.model.authCode || '';
		        return authCode.length < 8 || authCode.length > 50;
	        };

	        instance.areAllFieldsValid = function() {
		        return !this.isAuthCodeEmpty() && !this.isAuthCodeInvalid();
	        };

	        instance.close = function() {
		        $modalInstance.dismiss('cancel');
	        };

	        instance.save = function () {

		        this.showNotifications = false;

	        	angular.forEach($scope.authorizeTransferForm.$error.required, function (field) {
			        field.$setDirty();
		        });


		        if (!this.areAllFieldsValid()) {
			        var validationError = { Msg: ErrorMessageRes.error_FormIsNotValid };
			        this.asyncStatus(pageHelper.AsyncStatus.Error, validationError);
			        return;
		        }

		        $modalInstance.close({ authCode: this.model.authCode, domainName: this.model.domainName });
	        };

        },

        onSuccess: function (params) {
        	var instance = this.instance;
	        instance.model.authCode = '';
        },
        onActive: function (params) {
            var instance = this.instance;
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = true;
        },
        onError: function (params) {
        	var instance = this.instance;
        	instance.activeNotification = $scope.pageNotification.alerts.addError(params.Msg, {
        		hasClose: true,
        		isAutoHide: false
        	});
        	instance.showNotifications = true;
        	instance.asyncStatus(pageHelper.AsyncStatus.Active);
        }
        
    });
	
    $document.bind('keydown', function (evt) {
    	if (evt.which === 27 && !$scope.modalBehavior.asyncStatus().isDisabled) {
    		$scope.modalBehavior.close();
    	}
    });

}])
;
app.controller('domainTransferCtrlObsolete', ['$scope', '$rootScope', 'httpRepository', 'pageHelper', 'notificationService', '$filter', '$modal',
function ($scope, $rootScope, httpRepository, pageHelper, notificationService, $filter, $modal) {

	$scope.pageHelper = pageHelper;
    $scope.pageNotification = new notificationService.instance();

    $scope.pageBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.activeNotification = new notificationService.instance();
            instance.asyncStatus(pageHelper.AsyncStatus.Success);

            instance.authorizeTransfer = function (domainName) {
	        	var authorizeTransferModal = $modal.open({
	        		templateUrl: "/DomainTransfer/AuthorizeTransfer",
	        		controller: 'domainTransferAuthorizeModalCtrl',
	        		size: 'lg',
	        		backdrop: 'static',
	        		keyboard: false,
	        		resolve: {
	        			modalInteraction: function () {
	        				return {
	        					domainName: domainName
	        				};
	        			}
	        		}
	        	});

	        	authorizeTransferModal.result.then(function (modalResult) {
		        	httpRepository.transfer.setAuthCode(modalResult.domainName, modalResult.authCode);
		        });
	        };

        },

        onSuccess: function (params) {
            var instance = this.instance;
        },
        onActive: function (params) {
            var instance = this.instance;
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = true;
        },
        onError: function (params) {
            var instance = this.instance;
        }
    });
}])
;
app.controller('privateEmailChangeMailboxPasswordModalCtrl', ['$scope', '$modalInstance', 'mailboxBehavior', 'httpRepository', 'pageHelper', 'notificationService', '$document', 'subscriptionBehavior',
    function ($scope, $modalInstance, mailboxBehavior, httpRepository, pageHelper, notificationService, $document, subscriptionBehavior) {
        var errorMessageRes = ErrorMessageRes;
        $scope.pageHelper = pageHelper;
        $scope.mailboxNotification = new notificationService.instance();
        $scope.mailbox = mailboxBehavior.model;
        $scope.domainName = subscriptionBehavior.model.DomainName;
        $scope.mailboxData = {
            newPassword: null,
            confirmPassword: null,
            nmPassword: null
        };
        $scope.startAutoFocus = true;

        $scope.$watch('mailboxData.newPassword', function (newValue, oldValue) {
            if (newValue !== oldValue) {
                $scope.mailboxDataForm.passwordComplexity = pageHelper.Validation.passwordComplexityScore(newValue);
                var validity = pageHelper.Validation.password(newValue);
                for (var validityName in validity) {
                    $scope.mailboxDataForm.password['errorMsg_' + validityName] = validity[validityName].arg;
                    $scope.mailboxDataForm.password.$setValidity(validityName, validity[validityName].isValid);
                }
                $scope.mailboxDataForm.confirmPassword.$setValidity('passwordmatch', !(newValue != $scope.mailboxData.confirmPassword));
            }
        });
        $scope.$watch('mailboxData.nmPassword', function (newValue, oldValue) {
            if (newValue !== oldValue) {
            	$scope.mailboxDataForm.nmPassword.$setValidity('wrongPassword', true);
            	var validity = pageHelper.Validation.namecheapPassword(newValue);
                for (var validityName in validity) {
                    $scope.mailboxDataForm.nmPassword['errorMsg_' + validityName] = validity[validityName].arg;
                    $scope.mailboxDataForm.nmPassword.$setValidity(validityName, validity[validityName].isValid);
                }
            }
        });

        $scope.$watch('mailboxData.confirmPassword', function (newValue, oldValue) {
            if (newValue !== oldValue && newValue != null) {
                $scope.mailboxDataForm.confirmPassword.$setValidity('passwordmatch', !(newValue != $scope.mailboxData.newPassword));
            } 
        });
        
        $scope.modalBehavior = new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                instance.showErrors = false;
                instance.activeNotification = $scope.mailboxNotification.alerts;
                instance.save = function () {
                    if ($scope.mailboxDataForm.$valid) {

                    	instance.asyncStatus(pageHelper.AsyncStatus.Loading);

                    	$scope.mailboxDataForm.nmPassword.$setValidity('wrongPassword', true);

                    	httpRepository.privateEmail.mailboxChangePassword($scope.mailbox, $scope.mailboxData.newPassword, $scope.mailboxData.nmPassword).then(function (result) {
                            if (result.Error == false) {
                            	if (angular.isDefined(result.Result.IsNamecheapPasswordValid) && !result.Result.IsNamecheapPasswordValid) {
                            		$scope.mailboxDataForm.nmPassword.$setValidity('wrongPassword', false);
                            		instance.asyncStatus(pageHelper.AsyncStatus.Active, result);
                            	} else {
                            		$modalInstance.close(result.Msg);
                            	}
                            } else {
                           		instance.asyncStatus(pageHelper.AsyncStatus.Error, result);
                            }
                        });

                    }
                    else {
                        angular.forEach($scope.mailboxDataForm.$error.required, function (field) {
                            field.$setDirty();
                        });

                        instance.showErrors = true;
                        msg = errorMessageRes.error_FormIsNotValid;
                        if (instance.activeNotification!=null)
                        {
                            instance.activeNotification.clear();
                        }

                        instance.activeNotification.addError(msg, {
                            hasClose: true,
                            isAutoHide: true
                           
                        });
                    }
                };
                instance.cancel = function () {
                    $modalInstance.selectedMailboxes = $scope.selectedMailboxes;
                    $modalInstance.dismiss('cancel');
                };
                instance.asyncStatus(pageHelper.AsyncStatus.Active);

            },
            onSuccess: function (params) {
                var instance = this.instance;
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
            },
            onActive: function (params) {
                var instance = this.instance;
                instance.showErrors = false;
            },
            onLoading: function (params) {
                var instance = this.instance;
                instance.showErrors = false;
            },
            onError: function (params) {
                var instance = this.instance;
                instance.showErrors = true;
                if (instance.activeNotification != null) {
                    instance.activeNotification.clear();
                }
                instance.activeNotification.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
        });

        $document.bind('keydown', function (evt) {
            if (evt.which === 27 && !$scope.modalBehavior.asyncStatus().isDisabled) {
                $modalInstance.dismiss('escape key press');
            }
        });
        $document.bind('click', function (evt) {
            if (angular.element(evt.target).hasClass("mfp-content") && !$scope.modalBehavior.asyncStatus().isDisabled) {
                $scope.modalBehavior.cancel();
            }
        });
    }]);
;
app.controller('privateEmailEditAliasesCtrl', ['$scope', 'httpRepository', 'pageHelper', 'notificationService', '$cookies', '$cookieStore', '$filter', 'ncGridParams', '$modal', '$rootScope',
function ($scope, httpRepository, pageHelper, notificationService, $cookies, $cookieStore, $filter, ncGridParams, $modal, $rootScope) {
	$rootScope.closeLightbox = function () {
		window.location.href = $scope.locationHelper.subscriptionPath;
	}
	//#region Local properties
	$scope.pageNotification = new notificationService.instance();
	$scope.pageHelper = pageHelper;
	var peResource = PrivateEmailRes;
	//#endregion

	//#region Local methods

	$scope.locationHelper = (function () {
		//#region Properties
		var subscriptionPath = null;
		var subscriptionId = null;
		var shortMailboxName = null;
		var pathArray = window.location.pathname.split('/');

		//#endregion

		//#region Methods
		function getSubscriptionPath() {
			if (!subscriptionPath) {
				subscriptionPath = "";
				for (var i = 1; i < pathArray.length - 2; i++) {
					subscriptionPath += "/";
					subscriptionPath += pathArray[i];
				}
			}
			return subscriptionPath;
		}

		function getSubscriptionId() {
			if (!subscriptionId) {
				subscriptionId = pathArray[pathArray.length - 3];
			}
			return subscriptionId;
		}

		function getShortMailboxName() {
			if (!shortMailboxName) {
				shortMailboxName = pathArray[pathArray.length - 2];
			}
			return shortMailboxName;
		}

		//#endregion

		return {
			subscriptionPath: getSubscriptionPath(),
			subscriptionId: getSubscriptionId(),
			shortMailboxName: getShortMailboxName()
		}
	})();

	//#endregion

	//#region Aliases grid behavior
	$scope.aliasesBehavior = new pageHelper.AsyncStateBehavior({
		constructor: function () {
			var instance = this.instance;
			instance.activeNotification = $scope.pageNotification.alerts;
			instance.showLoadPanel = true;
			instance.showContent = true;
			instance.aliasesCount = null;
			instance.savedAliases = [];
			instance.model = {};
			instance.emptyAliasListWarning = null;
			var addNewAliasModalInstance = null;
			instance.editAliasModalInstance = null;
			instance.addNewAlias = function () {
				if (instance.aliasesCount > instance.model.MaxAliasCount || addNewAliasModalInstance != null) {
					return;
				}
				addNewAliasModalInstance = $modal.open({
					templateUrl: "/Domains/PrivateEmail/EditAliasesModal",
					controller: 'privateEmailEditAliasesModalCtr',
					size: 'lg',
					backdrop: 'static',
					keyboard: false,
					resolve: {
						peContext: function () {
							return {
								aliasesBehavior: instance
							};
						}
					}
				});
				addNewAliasModalInstance.result.then(function (newAliasName) {
					var newAliasBehavior = createAliasBehavior({
						Name: newAliasName,
						Pending: false
					}, instance);

					newAliasBehavior.asyncStatus(pageHelper.AsyncStatus.Success, { sender: 'added' });
					addNewAliasModalInstance = null;
				}, function () {
					addNewAliasModalInstance = null;
				});

			}

			instance.aliasesNgGrid = new ncGridParams();
			instance.aliasesNgGrid.parameters.mapping.isLazyLoading = false;
			instance.aliasesNgGrid.settings.getData = function ($defer, ncGridState) {
				$defer.resolve({ Data: instance.savedAliases });
			}
			instance.aliasesNgGrid.settings.selection.canChangeSelection = function (columnData) {
				return columnData.canChangeSelection();
			}

			instance.asyncStatus(pageHelper.AsyncStatus.Loading);
			httpRepository.privateEmail.getAliases($scope.locationHelper.subscriptionId, $scope.locationHelper.shortMailboxName).then(function (result) {
				result.sender = 'getAliases';
				instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
			});
		},
		onSuccess: function (params) {
			var instance = this.instance;

			if (params.sender == 'getAliases') {
				instance.model = params.Result;
				var temlAliasModelList = [];
				instance.model.MailboxAliases.forEach(function (element) {
					temlAliasModelList.push(createAliasBehavior(element, instance));
				});
				instance.savedAliases = temlAliasModelList;
				instance.aliasesNgGrid.settings.reload();
			}

			instance.aliasesCount = instance.savedAliases.length;
			instance.asyncStatus(pageHelper.AsyncStatus.Active);
		},
		onActive: function (params) {
			var instance = this.instance;
			instance.showLoadPanel = false;
			instance.showContent = true;
		},
		onLoading: function (params) {
			var instance = this.instance;
			instance.showLoadPanel = true;
			instance.showContent = false;
		},
		onLocked: function (params) {
			var instance = this.instance;
			instance.showLoadPanel = false;
			instance.showContent = true;
		},
		onError: function (params) {
			var instance = this.instance;
			if (params.sender == 'getAliases') {
				instance.showLoadPanel = false;
				instance.showContent = false;
				if (params.Msg == '') {
					params.Msg = 'Internal Server Error';
				}
			}
			instance.activeNotification.clear();
			instance.activeNotification.addError(params.Msg, {
				hasClose: true,
				isAutoHide: true,
				onDestroyed: function () {
					instance.showError = false;
				}
			});
		}
	});


	//#endregion

	function createAliasBehavior(aliasModel, aliasesBehavior) {
		return new pageHelper.AsyncStateBehavior({
			constructor: function () {
				var instance = this.instance;
				instance.aliasError = null;
				//instance.showErrors = false;
				instance.activeNotification = $scope.pageNotification.stuckNotifications;
				instance.model = {
					Name: aliasModel.Name,
					Pending: aliasModel.Pending,
					oldName: angular.copy(aliasModel.Name)
				}
				instance.canChangeSelection = function () {
					return !instance.asyncStatus().isDisabled;
				}
				instance.remove = function () {
					instance.asyncStatus(pageHelper.AsyncStatus.Loading, { sender: "remove" });
					httpRepository.privateEmail.removeAlias($scope.locationHelper.subscriptionId, aliasesBehavior.model.Mailbox, instance.model.Name)
					.then(function (result) {
						result.sender = "remove";
						instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
					});
				}
				instance.edit = function () {
					if (aliasesBehavior.editAliasModalInstance != null) {
						return;
					}

					aliasesBehavior.editAliasModalInstance = $modal.open({
						templateUrl: "/Domains/PrivateEmail/EditAliasesModal",
						controller: 'privateEmailEditAliasesModalCtr',
						size: 'lg',
						backdrop: 'static',
						keyboard: false,
						resolve: {
							peContext: function () {
								return {
									aliasesBehavior: aliasesBehavior,
									editableAlias: instance
								};
							}
						}
					});
					aliasesBehavior.editAliasModalInstance.result.then(function (newAliasName) {
						instance.model.oldName = angular.copy(instance.model.Name);
						instance.model.Name = newAliasName;
						instance.asyncStatus(pageHelper.AsyncStatus.Success, { sender: 'edit' });
						aliasesBehavior.editAliasModalInstance = null;
					}, function () {
						aliasesBehavior.editAliasModalInstance = null;
					});
				}
				instance.asyncStatus(pageHelper.AsyncStatus.Active);

			},
			onSuccess: function (params) {
				var instance = this.instance;
				instance.aliasError = null;
				function addSuccessNotification(msg) {
					instance.activeNotification.clear();
					instance.activeNotification.addSuccess(msg, { hasClose: true, isAutoHide: true });
				}

				if (params.sender == "added") {
					aliasesBehavior.aliasesNgGrid.settings.actions.addNewItem(instance).then(function (result) {
						aliasesBehavior.aliasesCount = aliasesBehavior.savedAliases.length;
						aliasesBehavior.model.AllDomainAliases.push(instance.model.Name);
						addSuccessNotification($filter('stringFormat')(peResource.msg_AliasIsAded, [instance.model.Name]));
						instance.asyncStatus(pageHelper.AsyncStatus.Active);
					});
					return;
				}
				if (params.sender == "remove") {
					aliasesBehavior.aliasesNgGrid.settings.actions.removeItem(instance).then(function (result) {
						aliasesBehavior.aliasesCount = aliasesBehavior.savedAliases.length;
						aliasesBehavior.model.AllDomainAliases.splice(aliasesBehavior.model.AllDomainAliases.indexOf(result.model.Name), 1);
						addSuccessNotification($filter('stringFormat')(peResource.msg_AliasIsRemoved, [result.model.Name]));
						instance.asyncStatus(pageHelper.AsyncStatus.Active);
					});
					return;
				}
				if (params.sender == "edit") {
					var editIndex = aliasesBehavior.model.AllDomainAliases.indexOf(instance.model.oldName);
					if (editIndex != -1) {
						aliasesBehavior.model.AllDomainAliases[editIndex] = instance.model.Name;
					}
					addSuccessNotification($filter('stringFormat')(peResource.msg_AliasNameChanged, [instance.model.oldName, instance.model.Name]));
				}
				instance.asyncStatus(pageHelper.AsyncStatus.Active);

			},
			onActive: function (params) {
				var instance = this.instance;
				instance.aliasError = null;
			},
			onLoading: function (params) {
				var instance = this.instance;
				instance.aliasError = null;
				//if (params.sender == "remove") {
				//    params.Msg = $filter('stringFormat')(peResource.msg_AliasIsRemoving, [instance.model.Name]);
				//    instance.activeNotification.clear();
				//    instance.activeNotification.addLoading(params.Msg, { hasClose: false, isAutoHide: false });
				//}
			},
			onLocked: function (params) {
				var instance = this.instance;
			},
			onError: function (params) {
				var instance = this.instance;

				if (params.sender == "remove") {
					params.Msg = $filter('stringFormat')(peResource.error_AliasRemoveInternal, [instance.model.oldName]);
				}

				instance.aliasError = params.Msg;
				instance.activeNotification.clear();
				instance.activeNotification.addError(params.Msg, {
					hasClose: true,
					isAutoHide: true,
					onDestroyed: function () {
						instance.asyncStatus(pageHelper.AsyncStatus.Active);
					}
				});
			}
		});
	}
}]);
app.controller('privateEmailEditAliasesModalCtr', ['$scope', 'httpRepository', 'pageHelper', 'notificationService', '$cookies', '$cookieStore', '$filter',
     '$document', '$modalInstance', 'peContext',
function ($scope, httpRepository, pageHelper, notificationService, $cookies, $cookieStore, $filter,
    $document, $modalInstance, peContext) {
    var peResource = PrivateEmailRes;
    $scope.pageNotification = new notificationService.instance();
    $scope.pageHelper = pageHelper;
    $scope.startAutoFocus = true;
    var errorMessageRes = ErrorMessageRes;

    var modalContext = {
        domainName: null,
        subscriptionId: null,
        mailboxName: null,
        allDomainAliases: [],
        allDomainMailboxes: [],
        oldAliasName:null,
        shortOldAliasName: null,
        isEdit: null,
        isShowModalHeader:true
    }
    $scope.fromLightboxs = false;
    if (peContext.aliasesBehavior != null)
    {
        $scope.fromLightboxs = true;
        modalContext.domainName = '@' + peContext.aliasesBehavior.model.Domain;
        modalContext.subscriptionId = peContext.aliasesBehavior.model.SubscriptionId;
        modalContext.mailboxName = peContext.aliasesBehavior.model.Mailbox;
        modalContext.allDomainAliases = peContext.aliasesBehavior.model.AllDomainAliases;
        modalContext.allDomainMailboxes = peContext.aliasesBehavior.model.AllDomainMailboxes;
        modalContext.shortOldAliasName = (peContext.editableAlias != null) ? function () {
            if (peContext.editableAlias.model.Name != null && peContext.editableAlias.model.Name.indexOf('@') != -1) {
                return peContext.editableAlias.model.Name.split('@')[0];
            }
            else {
                return peContext.editableAlias.model.Name;
            }
        }() : '';
        modalContext.oldAliasName = (peContext.editableAlias != null) ? peContext.editableAlias.model.Name : '';
        modalContext.isEdit = peContext.editableAlias != null;
        modalContext.isShowModalHeader = false;
    }
    if (peContext.mailboxesBehavior != null)
    {
        modalContext.domainName = '@' + peContext.subscriptionBehavior.model.DomainName;
        modalContext.subscriptionId = peContext.subscriptionBehavior.model.Id;
        modalContext.mailboxName = peContext.mailboxBehavior.model.MailboxName;
        modalContext.allDomainAliases = [];
        modalContext.allDomainMailboxes = [];

        peContext.mailboxesBehavior.model.forEach(function (element) {
            modalContext.allDomainMailboxes.push(element.model.MailboxName);
            element.model.Aliases.forEach(function (alias) {
                modalContext.allDomainAliases.push(alias);
            });
        });
        modalContext.shortOldAliasName = (peContext.mailboxBehavior.model.Aliases[0] != null) ? function () {
            if (peContext.mailboxBehavior.model.Aliases[0] != null && peContext.mailboxBehavior.model.Aliases[0].indexOf('@') != -1) {
                return peContext.mailboxBehavior.model.Aliases[0].split('@')[0];
            }
            else {
                return peContext.mailboxBehavior.model.Aliases[0];
            }
        }() : '';
        modalContext.oldAliasName = peContext.mailboxBehavior.model.Aliases[0];
        modalContext.isEdit = peContext.mailboxBehavior.model.Aliases[0] != null;
        modalContext.isShowModalHeader = true;
    }
    
    $scope.modalBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.showErrors = false;
            instance.activeNotification = $scope.pageNotification.alerts;
            instance.isShowModalHeader = modalContext.isShowModalHeader;
            instance.model = {
                isEdit: modalContext.isEdit,
                name: modalContext.shortOldAliasName,
                domainName: modalContext.domainName,
                mailboxName:modalContext.mailboxName
            }
            instance.cancel = function () {
                $modalInstance.dismiss('cancel');
            };
            instance.save = function () {
                if ($scope.aliasForm.$valid) {
                    instance.showErrors = false;
                    if (instance.model.name == modalContext.shortOldAliasName) {
                        instance.cancel();
                        return;
                    }
                    else {
                        instance.model.name.toLowerCase();
                    }
                    if (!instance.model.isEdit) {
                        instance.asyncStatus(pageHelper.AsyncStatus.Loading, { sender: "addNew" });
                        httpRepository.privateEmail.addAlias(modalContext.subscriptionId, modalContext.mailboxName, instance.model.name + instance.model.domainName)
                           .then(function (result) {
                               result.sender = "addNew";
                               instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                           });
                    }
                    else {
                        instance.asyncStatus(pageHelper.AsyncStatus.Loading, { sender: "edit" });
                        httpRepository.privateEmail.editAlias(modalContext.subscriptionId,
                            modalContext.mailboxName, modalContext.oldAliasName, instance.model.name + instance.model.domainName)
                            .then(function (result) {
                                result.sender = "edit";
                                instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                            });
                    }
                }
                else {
                    angular.forEach($scope.aliasForm.$error.required, function (field) {
                        field.$setDirty();
                    });

                    instance.showErrors = true;
                    msg = errorMessageRes.error_FormIsNotValid;

                    instance.activeNotification.clear();
                    instance.activeNotification.addError(msg, {
                        hasClose: true,
                        isAutoHide: true,
                        onDestroyed: function () {
                            instance.activeNotification.clear();
                        }
                    });
                }
            }
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onSuccess: function (params) {
            var instance = this.instance;
            instance.showErrors = false;
            if (params.sender == 'addNew' || params.sender == 'edit')
            {
                $modalInstance.close(instance.model.name + instance.model.domainName);
            }
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
        },
        onLoading: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.showErrors = true;
            if (params.sender == "addNew") {
                params.Msg = $filter('stringFormat')(peResource.error_AliasAddInternal, [instance.model.name + modalContext.domainName]);
            }
            if (params.sender == "edit") {
                params.Msg = $filter('stringFormat')(peResource.error_AliasChangeNameInternal, [modalContext.oldAliasName + modalContext.domainName]);
            }
            if (instance.activeNotification != null)
            {
                instance.activeNotification.clear();
            }
            instance.activeNotification.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true,
                onDestroyed: function () {
                    instance.showErrors = false;
                }
            });
        }
    });

    $scope.$watch('modalBehavior.model.name', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            newValue = (newValue == null) ? "" : newValue.toString();
            var validityCharacters = pageHelper.Validation.mailboxAliasNameCharacters(newValue);
            for (var validityName in validityCharacters) {
                $scope.aliasForm.name['errorMsg_' + validityName] = validityCharacters[validityName].arg;
                $scope.aliasForm.name.$setValidity(validityName, validityCharacters[validityName].isValid);
            }
            var verifyName = newValue + $scope.modalBehavior.model.domainName;
            $scope.aliasForm.name.$setValidity('duplicateAlias', modalContext.allDomainAliases.indexOf(verifyName) == -1 || verifyName==modalContext.oldAliasName);
            $scope.aliasForm.name.$setValidity('duplicateName', modalContext.allDomainMailboxes.indexOf(verifyName) == -1);
        }
    });

    $document.bind('keydown', function (evt) {
        if (evt.which === 27 && !$scope.modalBehavior.asyncStatus().isDisabled) {
            $scope.modalBehavior.cancel();
        }
    });
    $document.bind('click', function (evt) {
        if (angular.element(evt.target).hasClass("mfp-content") && !$scope.modalBehavior.asyncStatus().isDisabled) {
            $scope.modalBehavior.cancel();
        }
    });
}]);
app.controller('privateEmailEditStorageMailboxModalCtrl',
            ['$scope', '$modalInstance',  'httpRepository', 'pageHelper', 'mailboxBehavior','subscriptionBehavior', '$document','notificationService','mailboxesBehavior',
    function ($scope, $modalInstance, httpRepository, pageHelper, mailboxBehavior, subscriptionBehavior, $document, notificationService, mailboxesBehavior) {
        var errorMessageRes = ErrorMessageRes;
        $scope.mailboxNotification = new notificationService.instance();
        $scope.subscriptionBehavior = subscriptionBehavior;
        $scope.mailboxBehavior = mailboxBehavior;
        $scope.pageHelper = pageHelper;
        $scope.select2Options = { minimumResultsForSearch: -1 };
        $scope.startAutoFocus = true;
        $scope.quotaKb = function () {
            return ($scope.quotaSize == 0) ? $scope.quota * 1024 * 1024 * 1024 : $scope.quota * 1024 * 1024;
        }

        var reservedEmailStorage = function () {
            var allMailboxesEmailStorage=0
            var otherMailboxesEmailStorage = 0;
            mailboxesBehavior.model.forEach(function (element) {
                 allMailboxesEmailStorage += element.model.EmailStorageMax.Bytes;
            })
            otherMailboxesEmailStorage = allMailboxesEmailStorage - $scope.mailboxBehavior.model.EmailStorageMax.Bytes;
            return otherMailboxesEmailStorage;
        }()
        $scope.getMailboxeMaxStorage = function () {
            return pageHelper.Calculation.getDataSize($scope.subscriptionBehavior.model.EmailStorageMax.Bytes - reservedEmailStorage)
        }()
        $scope.stillDistributeStorage = function () {
            var availableEmailStorage = $scope.subscriptionBehavior.model.EmailStorageMax.Bytes - reservedEmailStorage;
            return pageHelper.Calculation.getDataSize(availableEmailStorage-$scope.quotaKb());
        }

        $scope.quota = angular.copy($scope.mailboxBehavior.model.EmailStorageMax.AdjustedSize);
        $scope.quotaSize = ($scope.mailboxBehavior.model.EmailStorageMax.Gb >= 1) ? 0 : 1;
        
        var validateMailboxQuota = function (newValue) {
            var maxValue = ($scope.quotaSize == 0) ? $scope.getMailboxeMaxStorage.Gb : $scope.getMailboxeMaxStorage.Mb;
            var minValue = ($scope.quotaSize == 0) ? 0.001 : 1;
            var validity = pageHelper.Validation.number(newValue, minValue, maxValue, $scope.quotaSize == 1);
             for (var validityName in validity) {
                 $scope.mailboxDataForm.mailboxstorage['errorMsg_' + validityName] = validity[validityName].arg;
                 $scope.mailboxDataForm.mailboxstorage.$setValidity(validityName, validity[validityName].isValid);
             }
         }
        $scope.$watch('quota', function (newValue, oldValue) {
            if (newValue !== oldValue) {
                validateMailboxQuota(newValue);
            }
        });
        $scope.$watch('quotaSize', function (newValue, oldValue) {
            if (newValue !== oldValue) {
                validateMailboxQuota($scope.quota);
            }
        });

        $scope.modalBehavior = new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                instance.showError = false;
                instance.activeNotification = $scope.mailboxNotification.alerts;
                instance.save = function () {
                    if ($scope.mailboxDataForm.$valid) {
                        function quotaMb() {
                            return ($scope.quotaSize == 0) ? parseFloat($scope.quota) * 1024 : parseFloat($scope.quota);
                        }
                        instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                        httpRepository.privateEmail.editStorage($scope.subscriptionBehavior.model.Id, $scope.mailboxBehavior.model.MailboxName, quotaMb()).then(function (result) {
                            instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                        });
                    } else {
                        angular.forEach($scope.mailboxDataForm.$error.required, function (field) {
                            field.$setDirty();
                        });

                        instance.showError = true;
                        msg = errorMessageRes.error_FormIsNotValid;
                        instance.activeNotification.clear();
                        instance.activeNotification.addError(msg, {
                            hasClose: true,
                            isAutoHide: true,
                            onDestroyed: function () {
                                instance.activeNotification = null;
                            }
                        });
                    }
                };
                instance.cancel = function () {
                    $modalInstance.dismiss('cancel');
                };
            },
            onSuccess: function (params) {
                var instance = this.instance;
                instance.cancel();
                $scope.mailboxBehavior.asyncStatus(pageHelper.AsyncStatus.Success, { sender: "editStorage", newQuota: pageHelper.Calculation.getDataSize($scope.quotaKb()) });
                instance.showError = false;
                instance.cancel();
            },
            onActive: function (params) {
                var instance = this.instance;
                instance.showError = false;
            },
            onLoading: function (params) {
                var instance = this.instance;
                instance.showErrors = true;
            },
            onError: function (params) {
                var instance = this.instance;
                instance.showError = true;
                instance.activeNotification.clear();
                instance.activeNotification.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true,
                    onDestroyed: function () {
                        instance.activeNotification = null;
                    }
                });
            }
        });
        $document.bind('keydown', function (evt) {
            if (evt.which === 27 && !$scope.modalBehavior.asyncStatus().isDisabled) {
                $modalInstance.dismiss('escape key press');
            }
        });
        $document.bind('click', function (evt) {
            if (angular.element(evt.target).hasClass("mfp-content") && !$scope.modalBehavior.asyncStatus().isDisabled) {
                $scope.modalBehavior.cancel();
            }
        });
    }]);
;
app.controller('privateEmailSetupMailboxesModalCtrl', ['$scope', '$modalInstance', 'mailboxesBehavior', 'httpRepository', 'subscriptionBehavior', 'pageHelper', '$timeout', 'notificationService',  '$document',
    function ($scope, $modalInstance, mailboxesBehavior, httpRepository, subscriptionBehavior, pageHelper, $timeout, notificationService, $document) {
        var peResource = PrivateEmailRes;
        var errorMessageRes = ErrorMessageRes;
        $scope.pageNotification = new notificationService.instance();
        $scope.pageHelper = pageHelper;

        $scope.subscriptionModel = subscriptionBehavior.model;
        $scope.select2Options = { minimumResultsForSearch: -1 };

        $scope.avalibleMailboxCount = $scope.subscriptionModel.MailboxesCountMax - $scope.subscriptionModel.MailboxesCountCurrent;
        var aliasesNames = new Array();
        var mailboxNames = new Array();
        var newMailboxNames = new Array();

        mailboxesBehavior.model.forEach(function (element) {
            mailboxNames.push(element.model.MailboxName);
            element.model.Aliases.forEach(function(alias) {
                aliasesNames.push(alias);
            });
        });
        $scope.getMailboxMaxStorage = function () {
            var availableStorageBytes = $scope.subscriptionModel.EmailStorageMax.Bytes - $scope.subscriptionModel.EmailStorageCurrent.Bytes;
            if (availableStorageBytes < 0) {
                availableStorageBytes = 0;
            }
            return pageHelper.Calculation.getDataSize(availableStorageBytes);
        }();

        $scope.$watch('newMailbox.name', function(newValue, oldValue) {
            if (newValue !== oldValue) {
                newValue = (newValue == null) ? "" : newValue.toString();
                var validityCharacters = pageHelper.Validation.mailboxAliasNameCharacters(newValue);
                for (var validityName in validityCharacters) {
                    $scope.mailboxForm.name['errorMsg_' + validityName] = validityCharacters[validityName].arg;
                    $scope.mailboxForm.name.$setValidity(validityName, validityCharacters[validityName].isValid);
                }
                var verifyName = newValue + "@" + $scope.subscriptionModel.DomainName;
                $scope.mailboxForm.name.$setValidity('duplicateAlias', !(aliasesNames.indexOf(verifyName) != -1));
                $scope.mailboxForm.name.$setValidity('duplicateName', !(mailboxNames.indexOf(verifyName) != -1 || newMailboxNames.indexOf(newValue) != -1));
            }
        });
        $scope.$watch('newMailbox.password', function(newValue, oldValue) {
            if (newValue !== oldValue) {
                $scope.newMailbox.passwordcomplexity = pageHelper.Validation.passwordComplexityScore(newValue);
                var validity = pageHelper.Validation.password(newValue);
                for (var validityName in validity) {
                    $scope.mailboxForm.password['errorMsg_'+validityName] = validity[validityName].arg;
                    $scope.mailboxForm.password.$setValidity(validityName, validity[validityName].isValid);
                }
                if ($scope.mailboxForm.confirmPassword.$dirty) {
                    $scope.mailboxForm.confirmPassword.$setValidity('passwordmatch', !(newValue != $scope.newMailbox.confirmPassword));
                }
            }
        });
        $scope.$watch('newMailbox.confirmPassword', function (newValue, oldValue) {
            if (newValue !== oldValue && newValue != null) {
                $scope.mailboxForm.confirmPassword.$setValidity('passwordmatch', !(newValue != $scope.newMailbox.password));
            } 
        });

        var validateNewMailboxQuota = function (newValue) {
            var maxValue = ($scope.newMailbox.quotaSize == 0) ? $scope.getMailboxMaxStorage.Gb : $scope.getMailboxMaxStorage.Mb;
            var minValue = ($scope.newMailbox.quotaSize == 0) ? 0.001 : 1;
            var validity = pageHelper.Validation.number(newValue, minValue, maxValue, $scope.newMailbox.quotaSize == 1);
            for (var validityName in validity) {
                $scope.mailboxForm.mailboxstorage['errorMsg_' + validityName] = validity[validityName].arg;
                $scope.mailboxForm.mailboxstorage.$setValidity(validityName, validity[validityName].isValid);
            }
        }
        $scope.$watch('newMailbox.quota', function (newValue, oldValue) {
            if (newValue !== oldValue) {
                validateNewMailboxQuota(newValue);
            }
        });
        $scope.$watch('newMailbox.quotaSize', function (newValue, oldValue) {
            if (newValue !== oldValue) {
                validateNewMailboxQuota($scope.newMailbox.quota);
            }
        });

        $scope.modalBehavior = new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                instance.showErrors = false;
                instance.messages.loading = peResource.msg_CreateMailboxProcessing;
                instance.activeNotification = $scope.pageNotification.alerts;
                instance.fillMailboxModel = function() {
                    $scope.newMailbox = {
                        name: null,
                        password: null,
                        confirmPassword: null,
                        quota: function () {
                            if ($scope.subscriptionModel.DefaultMailQuota.Bytes > $scope.getMailboxMaxStorage.Bytes) {
                                return $scope.getMailboxMaxStorage.AdjustedSize;
                            }
                            else {
                                return $scope.subscriptionModel.DefaultMailQuota.AdjustedSize
                            }
                        }(),
                        quotaSize: function () {
                            if ($scope.subscriptionModel.DefaultMailQuota.Bytes > $scope.getMailboxMaxStorage.Bytes) {
                                return ($scope.getMailboxMaxStorage.Gb >= 1) ? 0 : 1;
                            }
                            else {
                                return ($scope.subscriptionModel.DefaultMailQuota.Gb >= 1) ? 0 : 1;
                            }
                        }(),   
                        quotaMB: function() {
                            return (this.quotaSize == 0) ? this.quota * 1024 : this.quota;
                        },
                        subscriptionId: $scope.subscriptionModel.Id,
                        defaultMailQuota: $scope.subscriptionModel.DefaultMailQuota.Mb,
                    }
                    $scope.startAutoFocus = true;
                };
                instance.fillMailboxModel();

                instance.createMailbox = function () {
                    if ($scope.mailboxForm.$valid ) {
                        instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                        $scope.newMailbox.name = $scope.newMailbox.name.toLowerCase();
                        httpRepository.privateEmail.addMailbox($scope.newMailbox, $scope.subscriptionModel).then(function (result) {
                            instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                        });
                    }
                    else {
                        angular.forEach($scope.mailboxForm.$error.required, function (field) {
                            field.$setDirty();
                        });
                        validateNewMailboxQuota($scope.newMailbox.quota);

                        instance.showErrors = true;
                        msg = errorMessageRes.error_FormIsNotValid;
                        if (instance.activeNotification)
                        {
                            instance.activeNotification.clear();
                        }
                        
                        instance.activeNotification.addError(msg, {
                            hasClose: true,
                            isAutoHide: true
                        });
                    }
                };
                instance.cancel = function () {
                    $modalInstance.dismiss('cancel');
                };
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
               
            },
            onSuccess: function (params) {
                var instance = this.instance;
                mailboxAvailableStorage = null;
                $scope.subscriptionModel.MailboxesCountCurrent++;
                var newEmailStorageCurrentBytes = $scope.subscriptionModel.EmailStorageCurrent.Bytes + $scope.newMailbox.quotaMB() * 1024 * 1024;
                $scope.subscriptionModel.EmailStorageCurrent = pageHelper.Calculation.getDataSize(newEmailStorageCurrentBytes);
                $modalInstance.close(params.Result);
            },
            onActive: function (params) {
                var instance = this.instance;
                instance.showErrors = false;
            },
            onLoading: function (params) {
                var instance = this.instance;
                instance.showErrors = true;
            },
            onError: function (params) {
                var instance = this.instance;
                instance.showErrors = true;
                if (instance.activeNotification) {
                    instance.activeNotification.clear();
                }
                instance.activeNotification.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
        });

        $document.bind('keydown', function (evt) {
            if (evt.which === 27 && !$scope.modalBehavior.asyncStatus().isDisabled) {
                $modalInstance.dismiss('escape key press');
            }
        });
        $document.bind('click', function (evt) {
            if (angular.element(evt.target).hasClass("mfp-content") && !$scope.modalBehavior.asyncStatus().isDisabled) {
                $scope.modalBehavior.cancel();
            }
        });
    }
]);;
app.controller('privateEmailSubscriptionCtrl', [
	'$scope', '$rootScope', 'httpRepository', '$cookies', '$cookieStore', '$filter', '$modal', '$location', 'notificationService', 'pageHelper', '$timeout', '$q', 'ncGridParams', '$sce', 'forEachChunk',
	function($scope, $rootScope, httpRepository, $cookies, $cookieStore, $filter, $modal, $location, notificationService, pageHelper, $timeout, $q, ncGridParams, $sce, forEachChunk) {
		//#region Local properties
		var peResource = PrivateEmailRes;
		var commonButtonTextRes = CommonButtonTextRes;
		var subscriptionId = $location.absUrl().split('/')[$location.absUrl().split('/').length-2];
		
		//#endregion

		$scope.pageHelper = pageHelper; //for call helpers methods from view
		$scope.searchMailbox = "";
		$scope.pageNotification = new notificationService.instance();

		$scope.select2Options = { minimumResultsForSearch: -1 };
		$scope.subscriptionBehavior = new pageHelper.AsyncStateBehavior({
			constructor: function() {
				var instance = this.instance;
				var activeModalInstance = null;
				instance.showLoadPanel = true;
				instance.showPageContent = false;
				instance.planStatus = {
					ClassName: function() {
						var classNames = ["ok", "danger", "alert", "grace"];
						if (instance.model == null) {
							return null;
						} else if (instance.model.Status == $scope.SubscriptionStatus.Active) {
							return classNames[0];
						} else if (instance.model.Status == $scope.SubscriptionStatus.NotActivated) {
							return classNames[2];
						} else if (instance.model.Status == $scope.SubscriptionStatus.Expired || instance.model.Status == $scope.SubscriptionStatus.Cancelled
							|| instance.model.Status == $scope.SubscriptionStatus.Redemption /*|| instance.model.Status == 1*/) {
							return classNames[1];
						} else if (instance.model.Status == $scope.SubscriptionStatus.Grace) {
							return classNames[3];
						}
						return null;
					},
					Description: function() {
						if (instance.model == null) {
							return null;
						}
						var statuses = [
							peResource.status_SubscriptionActive, peResource.status_SubscriptionGrace, peResource.status_SubscriptionRedemption,
							peResource.status_SubscriptionNotActivated, peResource.status_SubscriptionExpired, peResource.status_SubscriptionCancelled
						];
						return (statuses[instance.model.Status] != null) ? statuses[instance.model.Status] : null;
					}
				};
				instance.renew = function() {
					activeModalInstance = $modal.open({
						templateUrl: "/Domains/PrivateEmail/RenewSubscriptionModal",
						controller: 'privateEmailRenewModalCtrl',
						size: 'lg',
						backdrop: 'static',
						keyboard: false,
						resolve: {
							subscriptionBehavior: function() {
								return instance;
							}
						}
					});
					activeModalInstance.result.then(function() {
					}, function() {
						activeModalInstance = null;
					});
				}
				instance.isDisabledRenew = function() {
					if (instance.asyncStatus().isLocked) {
						return (instance.model.LockedReason == 1) ? true : instance.model.Status != $scope.SubscriptionStatus.Grace;
					}
					return false;
				}
				instance.expireSoon = false;

				instance.mailboxesRestrictions = {
					locked: false,
					tooltip: null,
					flag: false

				}
				var mailboxAliasIsPending = null;

				instance.isAlert = function() {
					if (instance.model == null) {
						return false;
					}
					var isAlert = false;
					if (instance.model.Status == $scope.SubscriptionStatus.Grace) {
						isAlert = false;
					} else if (instance.model.Status == $scope.SubscriptionStatus.Redemption) {
						isAlert = false;
					} else if (instance.model.ExpireDayCount <= instance.model.ExpirationNotification) {
						isAlert = true;
					} else if (instance.model.Status != $scope.SubscriptionStatus.Active && instance.model.Status != $scope.SubscriptionStatus.Grace && instance.model.Status != $scope.SubscriptionStatus.Redemption) {
						isAlert = true;

					} else if (instance.model.MailboxesCountCurrent == $scope.SubscriptionStatus.Active) {
						isAlert = true;
					}
					if ($filter('propertyFilter')($scope.mailboxesBehavior.model, { 'model.HasPendingAliases': true }).length > 0) {
						if (mailboxAliasIsPending == null) {
							mailboxAliasIsPending = $scope.pageNotification.alerts.addWarning(peResource.error_HasPendingAliases, { hasClose: true, isAutoHide: false });
						}
						isAlert = true;
					}

					if (mailboxAliasIsPending != null) {
						mailboxAliasIsPending.destroy();
						mailboxAliasIsPending = null;
					}

					return isAlert;
				}

				instance.asyncStatus(pageHelper.AsyncStatus.Loading);
				httpRepository.privateEmail.getSubscription(subscriptionId).then(function(result) {
					instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
				});

			},
			onSuccess: function(params) {
				var instance = this.instance;
				params.Result.ValidityStart = pageHelper.Date.dateFromJson(params.Result.ValidityStart);
				params.Result.ValidityEnd = pageHelper.Date.dateFromJson(params.Result.ValidityEnd);
				params.Result.ExpireDayCount = pageHelper.Date.diffDays(new Date(), params.Result.ValidityEnd);

				var mailboxListIsEmptyMessage = null;
				$scope.$watch('subscriptionBehavior.model.MailboxesCountCurrent', function(newValue, oldvalue) {
					if (newValue != null && newValue != oldvalue || newValue == 0) {
						if (mailboxListIsEmptyMessage != null && mailboxListIsEmptyMessage.destroy != null) {
							mailboxListIsEmptyMessage.destroy();
						}
						if (newValue == 0 && instance.model.Status == $scope.SubscriptionStatus.Active) {
							mailboxListIsEmptyMessage = $scope.pageNotification.alerts.addWarning(peResource.info_MailboxListIsEmptyWithLink, { hasClose: true, isAutoHide: false, senderScope: $scope });
						}
					}
				});
				var emailStorageIsFull = null;
				$scope.$watch('subscriptionBehavior.model.EmailStorageCurrent.Bytes', function(newValue, oldvalue) {
					if (emailStorageIsFull != null && emailStorageIsFull.destroy != null) 
						emailStorageIsFull.destroy();
				});
				instance.model = params.Result;
				var subscriptionMxSettingToString = function() {
					var dnsRecordTypeNames = ['MX', 'CNAME', 'TXT', 'NS', 'A', 'SRV', 'AAAA', 'MXE'];
					var result = [];
					instance.model.ExpectedDnsRecords.forEach(function(element) {
						var record = "";
						record += (element.Host == '@') ? "" : element.Host + "." + instance.model.DomainName + " IN ";
						record += dnsRecordTypeNames[element.RecordType] + " ";
						record += element.Data;
						result.push(record);
					});
					return result.join('\n');
				}

				if (this.instance.model.LockedReason == 1) {
					instance.mailboxesRestrictions.locked = true;
					instance.mailboxesRestrictions.tooltip = peResource.msg_SubscriptionMailboxLockedAdminTooltip;
					instance.mailboxesRestrictions.flag = true;
					if (this.instance.model.Status == $scope.SubscriptionStatus.Grace) {
						instance.mailboxesRestrictions.tooltip = peResource.msg_MailboxLockedExpiredTooltip;
						instance.mailboxesRestrictions.locked = false;
						instance.mailboxesRestrictions.flag = true;
					} else if (this.instance.model.Status == $scope.SubscriptionStatus.Redemption) {
						instance.mailboxesRestrictions.tooltip = peResource.msg_MailboxLockedRedemptionTooltip;
						instance.mailboxesRestrictions.locked = false;
						instance.mailboxesRestrictions.flag = true;
					}
				} else if (this.instance.model.Status == $scope.SubscriptionStatus.Grace) {
					instance.mailboxesRestrictions.locked = false;
					instance.mailboxesRestrictions.tooltip = peResource.msg_MailboxLockedExpiredTooltip;
					instance.mailboxesRestrictions.flag = true;
				} else if (this.instance.model.Status == $scope.SubscriptionStatus.Redemption) {
					instance.mailboxesRestrictions.locked = false;
					instance.mailboxesRestrictions.tooltip = peResource.msg_MailboxLockedRedemptionTooltip;
					instance.mailboxesRestrictions.flag = true;
				} else if (this.instance.model.Status == 3) {
					instance.mailboxesRestrictions.locked = true;
					instance.mailboxesRestrictions.tooltip = peResource.msg_MailboxLockedPendingTooltip;
					instance.mailboxesRestrictions.flag = true;
				}
				if (instance.model.ExpireDayCount <= instance.model.ExpirationNotification && instance.model.ExpireDayCount >= 0 && this.instance.model.Status != 1) {
					if (instance.model.ExpireDayCount == 0) {
						msgText = peResource.msg_SubscriptionExpireToday;
					} else {
						msgText = $filter('stringFormat')(peResource.msg_SubscriptionExpireDayCountSiteMsg, [instance.model.ExpireDayCount]);
					}
					$scope.pageNotification.alerts.addWarning(msgText, { hasClose: true, isAutoHide: false });
				}

				if (this.instance.model.LockedReason == 1 || this.instance.model.Status != $scope.SubscriptionStatus.Active) {
					instance.asyncStatus(pageHelper.AsyncStatus.Locked);
					var expirationDate = new Date(params.Result.ValidityEnd);
					if (instance.model.Status == $scope.SubscriptionStatus.Grace) {
						var moveToRedemptionDays = pageHelper.Date.dateFromJson(expirationDate.setDate(expirationDate.getDate() + params.Result.MoveToRedemptionDays));
						$scope.pageNotification.alerts.addWarning($filter('stringFormat')(peResource.msg_PrivateEmailgetSubscriptionStatusGrace, [moveToRedemptionDays.toLocaleString().substring(0, moveToRedemptionDays.toLocaleString().indexOf(','))]),
						{ hasClose: true, isAutoHide: false });
					}
					if (instance.model.Status == $scope.SubscriptionStatus.Redemption) {
						var moveToExpirationDays = pageHelper.Date.dateFromJson(expirationDate.setDate(expirationDate.getDate() + params.Result.MoveToExpirationDays));
						$scope.pageNotification.alerts.addWarning($filter('stringFormat')(peResource.msg_PrivateEmailgetSubscriptionStatusRedemption, [moveToExpirationDays.toLocaleString().substring(0, moveToExpirationDays.toLocaleString().indexOf(','))]),
						{ hasClose: true, isAutoHide: false });
					}
					if (instance.model.Status == $scope.SubscriptionStatus.NotActivated && false) { //hide for uat

						$scope.pageNotification.alerts.addWarning($filter('stringFormat')(peResource.msg_PrivateEmailgetSubscriptionStatusNotActivated, [subscriptionMxSettingToString()]), { hasClose: true, isAutoHide: false });

					}
					if (instance.model.LockedReason == 1 && instance.model.StartLockDate) {

						var startLockDate = pageHelper.Date.dateFromJson(instance.model.StartLockDate);
						startLockDate.setDate(startLockDate.getDate() + 60);
						$scope.pageNotification.alerts.addWarning($filter('stringFormat')(peResource.msg_PrivateEmailgetSubscriptionStatusLock, [instance.model.DomainName, startLockDate.toLocaleString().substring(0, startLockDate.toLocaleString().indexOf(','))]), { hasClose: true, isAutoHide: false });
					}

					if (instance.model.DnsRecordsAreValid == false) {
					    $scope.pageNotification.alerts.addWarning($filter('stringFormat')(peResource.msg_SubscriptionWithoutCorrectMX, [subscriptionMxSettingToString()])
						   , { hasClose: true, isAutoHide: false });
					}

				} else {
					this.instance.asyncStatus(pageHelper.AsyncStatus.Active);
				}

				if (instance.model.DnsRecordVerificationSuccess == false) {
				    $scope.pageNotification.alerts.addWarning(peResource.error_DnsRecordVerificationFail, { hasClose: true, isAutoHide: false });
				}
				else if (instance.model.DnsRecordsAreValid == false && this.instance.model.Status == $scope.SubscriptionStatus.Active && this.instance.model.LockedReason != 1) {
				    $scope.pageNotification.alerts.addWarning($filter('stringFormat')(peResource.msg_SubscriptionWithoutCorrectMX, [subscriptionMxSettingToString()])
				        , { hasClose: true, isAutoHide: false });
				}
				instance.expireSoon = instance.model.ExpireDayCount <= instance.model.ExpirationNotification && instance.model.ExpireDayCount >= 0;


				//init model in related behaviors
				$scope.$broadcast('subscriptionInfoLoaded', { subscription: this.instance.model });

			},
			onLocked: function(params) {
				this.instance.showLoadPanel = false;
				this.instance.showPageContent = true;
			},
			onActive: function(params) {
				this.instance.showLoadPanel = false;
				this.instance.showPageContent = true;
			},
			onLoading: function(params) {
				this.instance.showLoadPanel = true;
				this.instance.showPageContent = false;
			},
			onError: function(params) {
				this.instance.showLoadPanel = false;
				this.instance.showPageContent = false;
				$scope.pageNotification.alerts.addError(params.Msg, { hasClose: true, isAutoHide: true });
			}
		});
		$scope.autoRenewBehavior = new pageHelper.AsyncStateBehavior({
			constructor: function() {
				var instance = this.instance;
				instance.isDisabled = true;
				$scope.$on('subscriptionInfoLoaded', function(event, args) {
					instance.model = $scope.subscriptionBehavior.model.AutoRenewEnabled;
					if (!$scope.subscriptionBehavior.asyncStatus().isLocked) {
						instance.asyncStatus(pageHelper.AsyncStatus.Active);
					}
				});

				instance.messages.loading = peResource.msg_AutoRenewProcessing;
				instance.messages.errorg = peResource.msg_ChangeAutoRenewError;

				instance.asyncStatus(pageHelper.AsyncStatus.Locked);
				instance.onChange = function() {
					instance.asyncStatus(pageHelper.AsyncStatus.Loading);
					httpRepository.privateEmail.changeAutoRenew($scope.subscriptionBehavior.model.Id, instance.model).then(function(result) {
						instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
					});
				}
			},
			onSuccess: function(params) {
				var instance = this.instance;
				$scope.subscriptionBehavior.model.AutoRenewEnabled = instance.model;
				instance.messages.success = params.Msg;
				instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(instance.messages.success, { hasClose: true, isAutoHide: true });

				//TODO:https://track.namecheap.net/browse/PEOX-1239
				if (instance.model == true && $scope.subscriptionBehavior.expireSoon) {
					var schedulerStart = new Date(pageHelper.Date.getESTDate().setHours(2, 30));
					if (schedulerStart.getTime() < pageHelper.Date.getESTDate().getTime()) {
						schedulerStart.setDate(schedulerStart.getDate() + 1);
					}
					var diffHours = pageHelper.Date.diffHours(schedulerStart, pageHelper.Date.getESTDate());
					instance.warningMsg = $filter('stringFormat')(peResource.msg_AutoRenewalAttemptProcessHoursCount, [Math.abs(diffHours)]);
				} else if (instance.model == false && instance.warningMsg != null) {
					instance.warningMsg = null;
				}

				instance.asyncStatus(pageHelper.AsyncStatus.Active);
			},
			onActive: function(params) {
				this.instance.isDisabled = false;
			},
			onLoading: function(params) {
				var instance = this.instance;
				instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading(instance.messages.loading, { hasClose: false, isAutoHide: false });
				instance.isDisabled = true;
			},
			onLocked: function(params) {
				this.instance.isDisabled = true;
			},
			onError: function(params) {
				var instance = this.instance;
				instance.model = !instance.model;
				instance.isDisabled = false;
				instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(instance.messages.errorg, {
					hasClose: true,
					isAutoHide: true
				});
			}
		});
		$scope.antiSpoofBehavior = new pageHelper.AsyncStateBehavior({
			constructor: function() {
				var instance = this.instance;
				$scope.$on('subscriptionInfoLoaded', function(event, args) {
					instance.model = $scope.subscriptionBehavior.model.AntiSpoofEnabled;
					if (!$scope.subscriptionBehavior.asyncStatus().isLocked) {
						instance.asyncStatus(pageHelper.AsyncStatus.Active);
					}
				});

				instance.messages.loading = peResource.msg_AntiSpoofFilterProcessing;
				instance.messages.errorg = peResource.msg_ChangeAntiSpoofFilterError;

				instance.asyncStatus(pageHelper.AsyncStatus.Locked);
				instance.onChange = function() {
					instance.asyncStatus(pageHelper.AsyncStatus.Loading);
					httpRepository.privateEmail.changeAntiSpoofFilter($scope.subscriptionBehavior.model.DomainName, instance.model).then(function(result) {
						instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
					});
				}
			},
			onSuccess: function(params) {
				var instance = this.instance;
				$scope.subscriptionBehavior.model.AntiSpoofEnabled = instance.model;
				instance.messages.success = params.Msg;
				instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(instance.messages.success, { hasClose: true, isAutoHide: true });
				instance.isDisabled = false;
			},
			onActive: function(params) {
				this.instance.isDisabled = false;
			},
			onLoading: function(params) {
				var instance = this.instance;
				instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading(instance.messages.loading, { hasClose: false, isAutoHide: false });
				instance.isDisabled = true;
			},
			onLocked: function(params) {
				this.instance.isDisabled = true;
			},
			onError: function(params) {
				var instance = this.instance;
				instance.isDisabled = false;
				instance.model = !instance.model;
				instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(instance.messages.errorg, {
					hasClose: true,
					isAutoHide: true
				});
			}
		});
		$scope.catchAllBehavior = new pageHelper.AsyncStateBehavior({
			constructor: function() {
				var instance = this.instance;
				instance.emptyOptionTitle = "None";
				instance.model = instance.emptyOptionTitle;
				instance.asyncStatus(pageHelper.AsyncStatus.Locked);
				instance.messages.loading = peResource.msg_CatchAllProcessing;

				$scope.$on('subscriptionInfoLoaded', function(event, args) {
					instance.model = $scope.subscriptionBehavior.model.CatchAll;
					if (!$scope.subscriptionBehavior.asyncStatus().isLocked) {
						instance.asyncStatus(pageHelper.AsyncStatus.Active);
					}
				});

				$scope.filterMailboxes = function(item) {
					if (!item.model.UserLocked && !item.model.AdminLocked && !item.model.AutoLocked && !item.model.IsCatchAll) {
						return true;
					}
					return false;
				}

				instance.onChange = function() {
					if ($scope.subscriptionBehavior.model.CatchAll == null && instance.model == instance.emptyOptionTitle) {
					    instance.asyncStatus(pageHelper.AsyncStatus.Active);
					}
					else if (instance.model == instance.emptyOptionTitle) {
					    instance.asyncStatus(pageHelper.AsyncStatus.Loading);
						httpRepository.privateEmail.clearCatchAllMailbox($scope.subscriptionBehavior.model.DomainName, $scope.subscriptionBehavior.model.CatchAll).then(function(result) {
							result.sender = "clearCatchAll";
							//instance.messages.success = peResource.msg_ClearAllMailboxSuccess;
							instance.messages.errorg = peResource.msg_ClearCatchAllMailboxError;
							instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
						});
					} else if ($scope.subscriptionBehavior.model.CatchAll != instance.model) {
					    instance.asyncStatus(pageHelper.AsyncStatus.Loading);
						httpRepository.privateEmail.catchAllMailbox($scope.subscriptionBehavior.model.DomainName, instance.model).then(function(result) {
							result.sender = "setCatchAll";
							//instance.messages.success = peResource.msg_CatchAllMailboxSuccess;
							instance.messages.errorg = peResource.msg_CatchAllMailboxError;
							instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
						});
					} else {
						instance.asyncStatus(pageHelper.AsyncStatus.Active);
					}
				}
			},
			onSuccess: function(params) {
				var instance = this.instance;

				if (params.sender == "clearCatchAll") {
					$scope.mailboxesBehavior.mailboxNgGrid.parameters.storage.requestData.forEach(function(element) {
						element.model.IsCatchAll = false;
						$scope.subscriptionBehavior.model.CatchAll = null;
					});
				} else if (params.sender == "setCatchAll") {
					$scope.mailboxesBehavior.mailboxNgGrid.parameters.storage.requestData.forEach(function(element) {
						element.model.IsCatchAll = (element.model.MailboxName == instance.model);
						$scope.subscriptionBehavior.model.CatchAll = instance.model;
					});
				}
				instance.messages.success = params.Msg;
				instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(instance.messages.success, { hasClose: true, isAutoHide: true });
				instance.isDisabled = false;
			},
			onActive: function (params) {
			    var instance = this.instance;
			    instance.isDisabled = false;
			},
			onLoading: function(params) {
				var instance = this.instance;
				instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading(instance.messages.loading, { hasClose: false, isAutoHide: false });
				instance.isDisabled = true;
			},
			onLocked: function(params) {
				this.instance.isDisabled = true;
			},
			onError: function(params) {
				var instance = this.instance;
				instance.model = $scope.subscriptionBehavior.model.CatchAll;
				instance.isDisabled = false;
				instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(instance.messages.errorg, {
					hasClose: true,
					isAutoHide: true
				});
			}
		});
		$scope.mailboxesBehavior = new pageHelper.AsyncStateBehavior({
			constructor: function() {
				var instance = this.instance;
				instance.activeModalInstance = null;
				instance.model = [];
				instance.selectAllMailboxesModel = false;
				instance.createMailboxBehavior = createMailboxBehavior;

				instance.asyncStatus(pageHelper.AsyncStatus.Loading);
				httpRepository.privateEmail.getMailboxes(subscriptionId).then(function(result) {
					result.sender = "getMailboxes";
					if ($scope.subscriptionBehavior.model == null) {
						$scope.$on('subscriptionInfoLoaded', function(event, args) {
							instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
						});
					} else {
						instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
					}
				});

				instance.mailboxNgGrid = new ncGridParams();
				instance.mailboxNgGrid.parameters.search.serchPropertyNames = ['model.MailboxName'];
				instance.mailboxNgGrid.parameters.mapping.isLazyLoading = false;
				instance.mailboxNgGrid.settings.getData = function($defer, ncGridState) {
					$defer.resolve({ Data: instance.model });
				}
				instance.mailboxNgGrid.settings.selection.canChangeSelection = function(columnData) {
					return columnData.canChangeSelection();
				}


				instance.setupMailboxes = function() {
					if (instance.activeModalInstance != null) {
						return;
					}
					instance.activeModalInstance = $modal.open({
						templateUrl: "/Domains/PrivateEmail/SetupMailboxesModal",
						controller: 'privateEmailSetupMailboxesModalCtrl',
						size: 'lg',
						backdrop: 'static',
						keyboard: false,
						resolve: {
							mailboxesBehavior: function() {
								return instance;
							},
							subscriptionBehavior: function() {
								return $scope.subscriptionBehavior;
							}
						}
					});
					instance.activeModalInstance.result.then(function(element) {
						instance.activeModalInstance = null;
						var newMailboxBehavior = instance.createMailboxBehavior(element, instance);
						newMailboxBehavior.asyncStatus(pageHelper.AsyncStatus.Success, { sender: "setupNew", result: newMailboxBehavior });

					}, function() {
						instance.activeModalInstance = null;
					});
				}
				instance.bulkActions = {
					turnOff: function(mailbox) {
						var changesMailboxes = [];
						if (mailbox != null) {
							changesMailboxes.push(mailbox);
						} else {
							changesMailboxes = $filter('propertyFilter')(instance.mailboxNgGrid.parameters.selection.selectedItems, { 'model.UserLocked': false, 'model.AdminLocked': false, 'model.AutoLocked': false, 'model.Pending': false });
						}

						var processedItemCount = 0;
						changesMailboxes.forEach(function(element, index, array) {
							element.asyncStatus(pageHelper.AsyncStatus.Loading, { sender: 'turnOff' });
						});
						forEachChunk(changesMailboxes, function(element) {
							var promice = httpRepository.privateEmail.turnOffMailbox(element.model);
							promice.then(function(result) {
								processedItemCount++;
								result.sender = "turnOff";
								element.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
								if (processedItemCount == changesMailboxes.length) {
									instance.mailboxNgGrid.settings.selection.checkSelectPage();
								}
							});
							return promice;
						});
					},
					turnOn: function(mailbox) {
						var changesMailboxes = [];
						if (mailbox != null) {
							changesMailboxes.push(mailbox);
						} else {
							changesMailboxes = $filter('propertyFilter')(instance.mailboxNgGrid.parameters.selection.selectedItems, { 'model.UserLocked': true, 'model.AdminLocked': false, 'model.AutoLocked': false, 'model.Pending': false });
						}
						var processedItemCount = 0;
						changesMailboxes.forEach(function(element, index, array) {
							element.asyncStatus(pageHelper.AsyncStatus.Loading, { sender: 'turnOn' });
						});

						forEachChunk(changesMailboxes, function(element) {
							var promice = httpRepository.privateEmail.turnOnMailbox(element.model);
							promice.then(function(result) {
								processedItemCount++;
								result.sender = "turnOn";
								element.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
								if (processedItemCount == changesMailboxes.length) {
									instance.mailboxNgGrid.settings.selection.checkSelectPage();
								}
							}, 1);
							return promice;
						});
					},
					remove: function(mailbox) {
						if (instance.activeModalInstance != null) {
							return;
						}
						var changesMailboxes = [];
						if (mailbox != null) {
							changesMailboxes.push(mailbox);
						} else {
							changesMailboxes = instance.mailboxNgGrid.parameters.selection.selectedItems;
						}
						instance.activeModalInstance = $modal.open({
							templateUrl: "/Common/PromptRemove",
							controller: 'promptRemoveModalCtrl',
							size: 'lg',
							backdrop: 'static',
							keyboard: false,
							resolve: {
								modalTitle: function() {
									var removeheader = '';
									if (mailbox == null && changesMailboxes.length > 1) {
										removeheader = $filter('stringFormat')(peResource.modal_title_DeleteMailboxes, [$scope.subscriptionBehavior.model.DomainName, changesMailboxes.length]);
									} else if (mailbox == null && changesMailboxes.length == 1) {
										removeheader = $filter('stringFormat')(peResource.modal_title_DeleteMailbox, [$scope.subscriptionBehavior.model.DomainName, changesMailboxes[0].model.MailboxName]);
									} else {
										removeheader = $filter('stringFormat')(peResource.modal_title_DeleteMailbox, [$scope.subscriptionBehavior.model.DomainName, mailbox.model.MailboxName]);
									}

									return removeheader;
								},
								modalContent: function() {
									return (mailbox == null && changesMailboxes.length > 1) ? peResource.modal_header_DeleteMailboxes : peResource.modal_header_DeleteMailbox;
								}
							}
						});
						instance.activeModalInstance.result.then(function() {
							changesMailboxes.forEach(function(element, index) {
								element.asyncStatus(pageHelper.AsyncStatus.Loading, { sender: 'remove' });
							});
							forEachChunk(changesMailboxes, function(element) {
								if (element.model.IsCatchAll) {
									$scope.catchAllBehavior.model = $scope.catchAllBehavior.emptyOptionTitle
									$scope.catchAllBehavior.onChange();
								}
								var promice = httpRepository.privateEmail.deleteMailbox(element.model);
								promice.then(function(result) {
									result.sender = "remove";
									element.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
								});
								return promice;
							}, 1);
							instance.activeModalInstance = null;
						}, function() {
							instance.activeModalInstance = null;
						});
					},
					canTurnOff: function() {
						return $filter('propertyFilter')(instance.mailboxNgGrid.parameters.selection.selectedItems, { 'model.UserLocked': false, 'model.AdminLocked': false, 'model.AutoLocked': false, 'model.Pending': false }).length > 0;
					},
					canTurnOn: function() {
						return $filter('propertyFilter')(instance.mailboxNgGrid.parameters.selection.selectedItems, { 'model.UserLocked': true, 'model.AdminLocked': false, 'model.AutoLocked': false, 'model.Pending': false }).length > 0;
					},
				}
			},
			onSuccess: function(params) {
				var instance = this.instance;
				if (params.sender == "getMailboxes") {
					var tempList = [];
					params.Result.forEach(function(element) {
						tempList.push(instance.createMailboxBehavior(element, instance));
					});
					instance.model = tempList;
					instance.mailboxNgGrid.settings.reload();
					$scope.select2Options.minimumResultsForSearch = ($scope.mailboxesBehavior.model.length > 10) ? 1 : -1;
					instance.asyncStatus(pageHelper.AsyncStatus.Active);
				}

			},
			onActive: function(params) {
				var instance = this.instance;
				if (this.instance.model.length == 0)
					instance.hideGrid = true;
			},
			onLoading: function(params) {
				var instance = this.instance;
			},
			onLocked: function(params) {
				var instance = this.instance;
			},
			onError: function(params) {
				var instance = this.instance;
				if (params.sender == "remove") {
					return;
				}
				if (params.sender == "getMailboxes") {
					instance.hideGrid = true;

					instance.activeNotification = $scope.pageNotification.stuckNotifications.addError('Could not load list of mailboxes', {
						hasClose: true,
						isAutoHide: true,
						onDestroyed: function() {
							instance.showError = false;
							instance.asyncStatus(pageHelper.AsyncStatus.Active);
						}
					});

				}
			}
		});

		function createMailboxBehavior(mailboxModel, mailboxesBehavior) {
			return new pageHelper.AsyncStateBehavior({
				constructor: function() {
					var instance = this.instance;
					instance.model = mailboxModel;
					instance.model.MailboxSortName = instance.model.MailboxName.substring(0, instance.model.MailboxName.indexOf("@"));
					instance.isDisabled = true;
					instance.canChangeSelection = function() {
						return !instance.asyncStatus().isDisabled;
					}
					instance.turnOff = function() {
						mailboxesBehavior.bulkActions.turnOff(instance);
					}
					instance.turnOn = function() {
						mailboxesBehavior.bulkActions.turnOn(instance);
					}
					instance.remove = function() {
						mailboxesBehavior.bulkActions.remove(instance);
					}
					instance.changePassword = function() {
						if (mailboxesBehavior.activeModalInstance != null) {
							return;
						}
						mailboxesBehavior.activeModalInstance = $modal.open({
							templateUrl: "/Domains/PrivateEmail/ChangeMailboxPasswordModal",
							controller: 'privateEmailChangeMailboxPasswordModalCtrl',
							size: 'lg',
							backdrop: 'static',
							keyboard: false,
							resolve: {
								mailboxBehavior: function() {
									return instance;
								},
								subscriptionBehavior: function() {
									return $scope.subscriptionBehavior
								}
							}
						});
						mailboxesBehavior.activeModalInstance.result.then(function() {
							instance.asyncStatus(pageHelper.AsyncStatus.Success, { sender: 'changePassword' });
							mailboxesBehavior.activeModalInstance = null;
						}, function() {
							mailboxesBehavior.activeModalInstance = null;
						});
					}
					instance.editStorage = function() {
						if (mailboxesBehavior.activeModalInstance != null) {
							return;
						}
						mailboxesBehavior.activeModalInstance = $modal.open({
							templateUrl: "/Domains/PrivateEmail/EditStorageMailboxModal",
							controller: 'privateEmailEditStorageMailboxModalCtrl',
							size: 'lg',
							backdrop: 'static',
							keyboard: false,
							resolve: {
								mailboxBehavior: function() {
									return instance;
								},
								subscriptionBehavior: function() {
									return $scope.subscriptionBehavior;
								},
								mailboxesBehavior: function() {
									return mailboxesBehavior;
								}
							}
						});

						mailboxesBehavior.activeModalInstance.result.then(function() {
							mailboxesBehavior.activeModalInstance = null;
						}, function() {
							mailboxesBehavior.activeModalInstance = null;
						});
					}

					instance.mailboxStatus = (function() {
						var getClassName = function() {
							var className = function() {
								return (!instance.model.UserLocked) ? "ok" : "danger";
							}
							if ($scope.subscriptionBehavior.model == null) {
								$scope.$on('subscriptionInfoLoaded', function() {
									return className();
								});
							} else {
								return className();
							}
						}
						var getDescription = function() {
							var description = function() {
								return instance.model.UserLocked ? peResource.status_SubscriptionMailboxOFF : peResource.status_SubscriptionMailboxON;
							}
							if ($scope.subscriptionBehavior.model == null) {
								$scope.$on('subscriptionInfoLoaded', function() {
									return description();
								});
							} else {
								return description();
							}
						}
						var getTooltip = function() {

							var tooltip = function() {
								if ($scope.subscriptionBehavior.mailboxesRestrictions.tooltip != null) 
									return $scope.subscriptionBehavior.mailboxesRestrictions.tooltip;
								if (instance.model.AdminLocked || instance.model.AutoLocked) 
									return peResource.msg_MailboxLockedTooltip;
								if (instance.model.Pending) 
									return peResource.msg_MailboxIsPendingTooltip;
								if (instance.model.UserLocked) 
									return peResource.msg_MailboxOffTooltip;
								return null;
							}

							if ($scope.subscriptionBehavior.model == null) {
								$scope.$on('subscriptionInfoLoaded', function() {
									return tooltip();
								});
							} else {
								return tooltip();
							}
						}

						return {
							className: getClassName,
							description: getDescription,
							tooltip: getTooltip
						}
					})();
					instance.context = {
						getManagePath: function() {
							return path = window.location.pathname + '/' +
								instance.model.MailboxName.replace('@' + $scope.subscriptionBehavior.model.DomainName, "") + '/EditAliases';
						},
						pendingAliasesGetManageHtmlLink: function() {
							return $sce.trustAsHtml($filter('stringFormat')(peResource.error_HasPendingAliasesWithLink, [instance.context.getManagePath()]));
						},
						actions: {
							manage: function() {
								window.location.href = instance.context.getManagePath();
							},
							addEdit: function() {
								if (instance.model.HasPendingAliases) {
									window.open('https://support.namecheap.com/index.php?/Tickets/Submit/RenderForm/44', '_blank');
									return;
								}
								if ($scope.subscriptionBehavior.model.MaxAliasCount < 1 && mailboxesBehavior.activeModalInstance != null) {
									return;
								}
								mailboxesBehavior.activeModalInstance = $modal.open({
									templateUrl: "/Domains/PrivateEmail/EditAliasesModal",
									controller: 'privateEmailEditAliasesModalCtr',
									size: 'lg',
									backdrop: 'static',
									keyboard: false,
									resolve: {
										peContext: function() {
											return {
												subscriptionBehavior: $scope.subscriptionBehavior,
												mailboxesBehavior: mailboxesBehavior,
												mailboxBehavior: instance
											};
										}
									}
								});
								mailboxesBehavior.activeModalInstance.result.then(function(newAliasName) {
									if (instance.model.Aliases.length == 0) {
										instance.asyncStatus(pageHelper.AsyncStatus.Success, { sender: "addedAlias", aliasName: newAliasName });
									} else {
										instance.asyncStatus(pageHelper.AsyncStatus.Success, { sender: "editAlias", aliasName: newAliasName });
									}
									mailboxesBehavior.activeModalInstance = null;
								}, function() {
									mailboxesBehavior.activeModalInstance = null;
								});


							},
							remove: function() {
								instance.asyncStatus(pageHelper.AsyncStatus.Loading, { sender: "removeAlias" });
								httpRepository.privateEmail.removeAlias($scope.subscriptionBehavior.model.Id, instance.model.MailboxName, instance.model.Aliases[0])
									.then(function(result) {
										result.sender = "removeAlias";
										result.aliasName = instance.model.Aliases[0];
										instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
									});

							},
						},
						isSingleAlias: $scope.subscriptionBehavior.model.MaxAliasCount == 1,
						disabled: $scope.subscriptionBehavior.model.LockedReason == 1 || $scope.subscriptionBehavior.model.Status == $scope.SubscriptionStatus.Grace
							|| $scope.subscriptionBehavior.model.Status == $scope.SubscriptionStatus.Redemption,
						btns: {
							cover: null,
							additional: [],
							isSplitBtn: false,
							update: function() {
								function initBtn(title, clickFn) {
									return { title: title, clickFn: clickFn }
								}

								instance.context.btns.additional = [];
								var buttons = {
									btnSupport: initBtn(commonButtonTextRes.static_Support, function() {
										window.open('https://support.namecheap.com/index.php?/Tickets/Submit/RenderForm/44', '_blank');
									}),
									btnEditStorage: initBtn(peResource.btn_EditStorage, instance.editStorage),
									btnManageAliases: initBtn(peResource.btn_EditAliases, instance.context.actions.manage),
									btnAddAlias: initBtn(peResource.btn_AddNewAlias, instance.context.actions.addEdit),
									btnEditAlias: initBtn(peResource.btn_EditAlias, instance.context.actions.addEdit),
									btnChangePassword: initBtn(peResource.btn_ChangePassword, instance.changePassword),
									btnTurnOffMailbox: initBtn(peResource.btn_TurnOffMailbox, instance.turnOff),
									btnTurnOnMailbox: initBtn(peResource.btn_TurnOnMailbox, instance.turnOn),
									btnRemoveAlias: initBtn(peResource.btn_RemoveAlias, instance.context.actions.remove),
									btnRemove: initBtn(commonButtonTextRes.static_Remove, instance.remove),
									btnOpenWebmail: initBtn(peResource.btn_OpenWebmail, function() {
										window.open($scope.subscriptionBehavior.model.WebmailUrl, '_blank');
									}),
								};
								if (instance.model.AdminLocked || instance.model.Pending) {
									instance.context.btns.cover = buttons.btnSupport;
									instance.context.btns.additional.push(buttons.btnRemove);

								} else {
									if (!instance.model.UserLocked && !instance.model.AdminLocked && !instance.context.isSingleAlias) {
										if (instance.model.HasPendingAliases) {
											instance.context.btns.cover = buttons.btnManageAliases;
											instance.context.btns.additional.push(buttons.btnEditStorage);
										} else {
											instance.context.btns.cover = buttons.btnEditStorage;
											instance.context.btns.additional.push(buttons.btnManageAliases);
										}
										instance.context.btns.additional.push(buttons.btnChangePassword);
										instance.context.btns.additional.push(buttons.btnTurnOffMailbox);
										instance.context.btns.additional.push(buttons.btnRemove);
										instance.context.btns.additional.push(buttons.btnOpenWebmail);
									} else if (!instance.model.UserLocked && !instance.model.AdminLocked && instance.context.isSingleAlias) {
										if (instance.model.HasPendingAliases) {
											instance.context.btns.cover = buttons.btnSupport;
											instance.context.btns.additional.push(buttons.btnEditStorage);
											instance.context.btns.additional.push(buttons.btnRemoveAlias);
										} else {
											instance.context.btns.cover = buttons.btnEditStorage;

											if (instance.model.CurrentAliaseCount == 0) {
												instance.context.btns.additional.push(buttons.btnAddAlias);
											} else {
												instance.context.btns.additional.push(buttons.btnEditAlias);
												instance.context.btns.additional.push(buttons.btnRemoveAlias);
											}
										}
										instance.context.btns.additional.push(buttons.btnChangePassword);
										instance.context.btns.additional.push(buttons.btnTurnOffMailbox);
										instance.context.btns.additional.push(buttons.btnRemove);
										instance.context.btns.additional.push(buttons.btnOpenWebmail);

									} else if (instance.model.UserLocked && !instance.model.AdminLocked) {
										instance.context.btns.cover = buttons.btnTurnOnMailbox;
										instance.context.btns.additional.push(buttons.btnRemove);
										instance.context.btns.additional.push(buttons.btnSupport);
									}
								}
								if (instance.context.btns.additional.length > 0) {
									instance.context.btns.isSplitBtn = true;
								}
							}
						}
					}
					instance.context.btns.update();
				},
				onSuccess: function(params) {
					var instance = this.instance;
					if (params.sender == "addedAlias") {
						instance.model.CurrentAliaseCount = 1;
						instance.model.Aliases.push(params.aliasName);
						params.Msg = $filter('stringFormat')(peResource.msg_AliasIsAded, [params.aliasName])
					}
					if (params.sender == "removeAlias") {
						if (instance.model.HasPendingAliases == true) {
							instance.model.HasPendingAliases = false;
						}
						instance.model.CurrentAliaseCount = 0;
						params.Msg = $filter('stringFormat')(peResource.msg_AliasIsRemoved, [params.aliasName])
						instance.model.Aliases = [];
					}
					if (params.sender == "editAlias") {
						params.Msg = $filter('stringFormat')(peResource.msg_AliasNameChanged, [instance.model.Aliases[0], params.aliasName]);
						instance.model.Aliases[0] = params.aliasName;
					}

					if (params.sender == "remove") {
						var msg = $filter('stringFormat')(peResource.msg_MailboxIsRemoved, [instance.model.MailboxName]);
						if (instance.activeNotification.destroy != null) {
							instance.activeNotification.destroy();
						}
						instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(msg, { hasClose: true, isAutoHide: true });

						mailboxesBehavior.mailboxNgGrid.settings.actions.removeItem(instance).then(function(result) {
							var newEmailStorageCurrentBytes = $scope.subscriptionBehavior.model.EmailStorageCurrent.Bytes - instance.model.EmailStorageMax.Bytes;
							$scope.subscriptionBehavior.model.EmailStorageCurrent = pageHelper.Calculation.getDataSize(newEmailStorageCurrentBytes);
							$scope.subscriptionBehavior.model.MailboxesCountCurrent--;
						});
						$scope.select2Options.minimumResultsForSearch = ($scope.mailboxesBehavior.model.length > 10) ? 1 : -1;
						return;
					}
					if (params.sender == "changePassword") {
						params.Msg = $filter('stringFormat')(peResource.msg_MailboxChangePasswordSuccess, [instance.model.MailboxName]);
					}

					if (params.sender == "editStorage") {
						params.Msg = $filter('stringFormat')(peResource.msg_EditStorageChanged, [
							instance.model.MailboxName, instance.model.EmailStorageMax.AdjustedSize,
							instance.model.EmailStorageMax.AdjustedName, params.newQuota.AdjustedSize, params.newQuota.AdjustedName
						]);

						$scope.subscriptionBehavior.model.EmailStorageCurrent =
							pageHelper.Calculation.getDataSize($scope.subscriptionBehavior.model.EmailStorageCurrent.Bytes - instance.model.EmailStorageMax.Bytes
								+ params.newQuota.Bytes);
						instance.model.EmailStorageMax = params.newQuota;
						instance.model.EmailStorageAvailable = pageHelper.Calculation.getDataSize(instance.model.EmailStorageMax.Bytes - instance.model.EmailStorageCurrent.Bytes);
					}

					if (params.sender == "turnOff") {
						params.Msg = $filter('stringFormat')(peResource.msg_MailboxDisableSuccess, [instance.model.MailboxName]);
						instance.model.UserLocked = true;
						mailboxesBehavior.mailboxNgGrid.settings.selection.unselectItem(instance);
					}
					if (params.sender == "turnOn") {
						params.Msg = $filter('stringFormat')(peResource.msg_MailboxEnableSuccess, [instance.model.MailboxName]);
						instance.model.UserLocked = false;
						mailboxesBehavior.mailboxNgGrid.settings.selection.unselectItem(instance);
					}

					if (params.sender == "setupNew") {
						mailboxesBehavior.mailboxNgGrid.settings.actions.addNewItem(instance).then(function(result) {
							var msg = $filter('stringFormat')(peResource.msg_PrivateEmailAddMailboxSuccess, [instance.model.MailboxName]);
							if (instance.activeNotification.destroy != null) {
								instance.activeNotification.destroy();
							}
							instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(msg, { hasClose: true, isAutoHide: true });
							//$scope.mailboxesBehavior.model.push(result)
							instance.asyncStatus(pageHelper.AsyncStatus.Active);
						});
						$scope.select2Options.minimumResultsForSearch = ($scope.mailboxesBehavior.model.length > 10) ? 1 : -1;

						instance.asyncStatus(pageHelper.AsyncStatus.Active);
						return;
					}

					instance.isDisabled = false;
					if (instance.activeNotification.destroy != null) {
						instance.activeNotification.destroy();
					}
					instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(params.Msg, { hasClose: true, isAutoforEachHide: true });
					instance.context.btns.update();
					instance.asyncStatus(pageHelper.AsyncStatus.Active);

				},
				onActive: function(params) {
					var instance = this.instance;
					instance.isDisabled = false;
					instance.showError = false;
				},
				onLoading: function(params) {
					var instance = this.instance;
					instance.showError = false;
					//if (params.sender == "remove") {
					//    params.Msg = $filter('stringFormat')(peResource.msg_MailboxIsRemoving, [instance.model.MailboxName]);
					//}
					//if (params.sender == "removeAlias") {
					//    params.Msg = $filter('stringFormat')(peResource.msg_AliasIsRemoving, [instance.model.Aliases[0]]);
					//}
					//if (params.sender == "turnOff") {
					//    params.Msg = $filter('stringFormat')(peResource.msg_TurnOffMailboxProcessing, [instance.model.MailboxName]);
					//}
					//if (params.sender == "turnOn") {
					//    params.Msg = $filter('stringFormat')(peResource.msg_TurnOnMailboxProcessing, [instance.model.MailboxName]);
					//}
					//if (params.Msg != null)
					//{
					//    if (instance.activeNotification.destroy != null) { instance.activeNotification.destroy(); }
					//    instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading(params.Msg, { hasClose: false, isAutoHide: false });
					//}
					//instance.activeNotification.clear();

					instance.isDisabled = true;
				},
				onLocked: function(params) {
					var instance = this.instance;
					instance.showError = false;
					instance.isDisabled = true;
				},
				onError: function(params) {
					var instance = this.instance;
					instance.isDisabled = false;
					instance.showError = true;
					if (params.sender == "turnOff") {
						params.Msg = $filter('stringFormat')(peResource.msg_PrivateEmailTurnOffMailboxError, [instance.model.MailboxName]);
					}
					if (params.sender == "turnOn") {
						params.Msg = $filter('stringFormat')(peResource.msg_PrivateEmailTurnOnMailboxError, [instance.model.MailboxName]);
					}
					if (params.sender == "remove") {
						params.Msg = $filter('stringFormat')(peResource.msg_PrivateEmailDeleteMailboxError, [instance.model.MailboxName]);
					}
					if (params.sender == "removeAlias") {
						params.Msg = $filter('stringFormat')(peResource.error_AliasRemoveInternal, [instance.model.Aliases[0]]);
					}

					//if (instance.activeNotification.destroy != null) {
					//    instance.activeNotification.destroy();
					//}
					instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
						hasClose: true,
						isAutoHide: true,
						onDestroyed: function() {
							instance.showError = false;
							instance.asyncStatus(pageHelper.AsyncStatus.Active);
						}
					});
					instance.context.btns.update();
				}
			});
		}

		$scope.SubscriptionStatus = {
			Active: 0,
			Grace: 1,
			Redemption: 2,
			NotActivated: 3,
			Expired: 4,
			Cancelled: 5
		};

		$scope.MailboxStatus = {
			Active: 0,
			Disabled: 1,
			Locked: 2,
			Pending: 3
		};

		/*TODO: mailboxes autogeneretor remove after test period */
		$scope.speed_createmailboxes = function(index, speed_mailboxCount, speed_startFrom) {
			if (index == null) {
				index = 0;
			}
			if (speed_startFrom == null) {
				speed_startFrom = 0;
			}
			if (speed_mailboxCount == null) {
				speed_mailboxCount = 50;
			}

			if (index < speed_startFrom + speed_mailboxCount) {
				var sufix = +speed_startFrom + index;
				var model = {
					name: "testSpeed" + sufix,
					password: "123456789",
					quota: 1,
					subscriptionId: $scope.subscriptionBehavior.model.Id,
					defaultMailQuota: 1,
					quotaMB: function() {
						return 1;
					}
				}
				httpRepository.privateEmail.addMailbox(model, $scope.subscriptionBehavior.model).then(function(result) {
					$scope.speedLog += '(' + sufix + ')' + model.name + "-->" + result.Error + '(' + result.Msg + ')' + ' \n';
					$scope.speed_createmailboxes(index += 1, speed_mailboxCount, speed_startFrom);
				});
			}
		}

	}
]);;
app.controller('privateEmailUpgradeSubscriptionCtrl', ['$scope', 'httpRepository', 'pageHelper', 'notificationService', '$filter','$rootScope',
function ($scope, httpRepository, pageHelper, notificationService, $filter,$rootScope) {
    var upgradeRes = UpgradeSubscriptionRes
    $rootScope.closeLightbox = function () {
        window.location.href = $scope.getSubscriptionPath();
    }

    $scope.pageNotification = new notificationService.instance();
    $scope.pageHelper = pageHelper;
    $scope.getSubscriptionPath = function () {
        var pathArray = window.location.pathname.split('/');
        var newPathname = "";
        for (var i = 1; i < pathArray.length - 1; i++) {
            newPathname += "/";
            newPathname += pathArray[i];

        }
        return newPathname;
    }

    $scope.upgradeBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.showLoadPanel = true;
            instance.showGrid = false;
            instance.isDisabled = true;
            instance.model = [];

            instance.getSubscriptionId = function () {
                var pathArray = window.location.pathname.split('/');
                return pathArray[pathArray.length - 2];
            }
            instance.changeSelectedTab = function (tabIndex) {
                instance.model.forEach(function(element, index) {
                    element.isSelected = index == tabIndex;
                });
            }

            instance.asyncStatus(pageHelper.AsyncStatus.Loading);
            httpRepository.privateEmail.getAvailableSubscriptionPlans(instance.getSubscriptionId()).then(function (result) {
                instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
            });

            instance.upgrade = function (plan) {
                instance.asyncStatus(pageHelper.AsyncStatus.Loading, { sender: "upgrade" });
                httpRepository.privateEmail.upgradeSubscription(instance.getSubscriptionId(), plan.Name, instance.model[0].Name, instance.model.DefaultPaymentType).then(function (result) {
                    result.sender = "upgrade";
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                });
            }

        },
        onSuccess: function (params) {
            var instance = this.instance;
            if (params.sender == "upgrade") {
                window.location.href = params.Result;
            } else {
                instance.model = params.Result;
                instance.changeSelectedTab(0);
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
            }

            
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showGrid = true;
            instance.isDisabled = false;
        },
        onLoading: function (params) {
            var instance = this.instance;
            //instance.showLoadPanel = true;
            //instance.isDisabled = true;
            //if (params.sender != 'upgrade') {
            //    instance.showGrid = false;
            //}
        },
        onLocked: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showGrid = true;
            instance.isDisabled = true;
           
        },
        onError: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            if (params.sender != 'upgrade') {
                instance.showGrid = false;
            }
            instance.isDisabled = false;
            instance.activeNotification = $scope.pageNotification.alerts.addError(params.Msg, {
                hasClose: false,
                isAutoHide: false,
                onDestroyed: function () {
                    instance.showError = false;
                }
            });
        }
    });
    $scope.getFeatureDescription = function (feature) {
        if (upgradeRes['feature_' + feature] != null) {
            return upgradeRes['feature_' + feature];
        }
        return feature;
    }
    }]);
app.controller('onepagerSubscriptionsCtrl', [
	'$scope', '$rootScope', 'httpRepository', '$filter', '$modal', '$location', 'notificationService', 'pageHelper', '$timeout', '$sce', 'ncGridParams',
	function($scope, $rootScope, httpRepository, $filter, $modal, $location, notificationService, pageHelper, $timeout, $sce, ncGridParams) {

		$scope.pageHelper = pageHelper; //for call helpers methods from view
		$scope.pageNotification = new notificationService.instance();
		$scope.onePagerResources = OnePagerResources;

		$scope.OnepagerStatus = {
			Active: 0,
			Alert: 1,
			Grace: 2,
			Expired: 3,
			ActiveBlocked: 4,
			AlertBlocked: 5,
			GraceBlocked: 6,
			ExpiredBlocked: 7
		}
		$scope.OnepagerStatusSortedStatus= {
			Active: 0,
			ActiveBlocked: 1,
			Alert: 2,
			AlertBlocked: 3,
			Grace: 4,
			GraceBlocked: 5,
			Expired: 6,
			ExpiredBlocked: 7,
		}

		$scope.pageBehavior = new pageHelper.AsyncStateBehavior({
			constructor: function() {
				var instance = this.instance;
				instance.asyncStatus(pageHelper.AsyncStatus.Loading);
				instance.activeNotification = new notificationService.instance();

				httpRepository.onepager.getList().then(function(result) {
					result.sender = "getModel";
					instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
				});

				instance.onepagerGrid = new ncGridParams();
				instance.onepagerGrid.parameters.mapping.isLazyLoading = false;
				instance.onepagerGrid.parameters.search.serchPropertyNames = ['model.DomainName'];
				instance.onepagerGrid.settings.getData = function($defer, onepagerGrid) {
					$defer.resolve({ Data: instance.model });
				}
				instance.onepagerGrid.settings.selection.canChangeSelection = function (columnData) {
					return columnData.model.IsEnabled;
				}
				instance.statusList =[
					 { header: "Active", propertyname: 'model.Status', propertyvalue: 0 },
					 { header: "Alert", propertyname: 'model.Status', propertyvalue: 1 },
					 { header: "Grace", propertyname: 'model.Status', propertyvalue: 2 },
					 { header: "Expired", propertyname: 'model.Status', propertyvalue: 3 }
				];

				instance.flagList = [
					{ header: "Blocked", propertyname: 'model.IsEnabled', propertyvalue: false }
				];

				instance.renewBulk = function () {
					// the feature is not implemented.

//					angular.forEach(instance.onepagerGrid.parameters.selection.selectedItems, function(element) {

//						httpRepository.onepager.renewAddToCart('link', '1111');
						/*
						if (element.model.IsAutoRenew != isAutoRenewOn && element.model.IsEnabled) {
							httpRepository.onepager.setAutoRenew(element.model.SubscriptionId, isAutoRenewOn)
							.then(function (result) {
								result.sender = "switchAutoRenew";
								element.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
							});
						} 
						*/
//					}) ;
				}
			},


			onSuccess: function(params) {
				var instance = this.instance;

				if (params.sender == 'getModel') {
					var tmpList = [];

					for (var i = 0; i < params.Result.Subscriptions.length; i++) {
						var itemBehavior= createGridItemBehavior(params.Result.Subscriptions[i], instance)
						itemBehavior.selectrionChbId ="chb_onepager"+ i;
						tmpList.push(itemBehavior);
					}

					instance.model = tmpList;
					instance.showContent = true;
					instance.showLoadPanel = false;
					instance.onepagerGrid.settings.reload();
				}

				// sort configuration
				var entity = instance.onepagerGrid.parameters.ordering.usedEntities[1];
				entity.descending = false;
				instance.onepagerGrid.settings.ordering.set(entity);
				
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
			},
			onActive: function(params) {
				var instance = this.instance;
			},
			onLoading: function(params) {
				var instance = this.instance;
			},
			onLocked: function(params) {
				var instance = this.instance;
			},
			onError: function (params) {
				var instance = this.instance;

				instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
					hasClose: true,
					isAutoHide: false
				});
			}
		});

		function createGridItemBehavior(item, pageBehavior) {
			return new pageHelper.AsyncStateBehavior({
				constructor: function () {
					var instance = this.instance;

					function getOnepagerStatusSortedValue() {
						if ($scope.OnepagerStatus.Alert == instance.model.StatusTotal) {
							return $scope.OnepagerStatusSortedStatus.Alert;
						}
						else if ($scope.OnepagerStatus.Grace == instance.model.StatusTotal) {
							return $scope.OnepagerStatusSortedStatus.Grace;
						}
						else if ($scope.OnepagerStatus.Expired == instance.model.StatusTotal) {
							return $scope.OnepagerStatusSortedStatus.Expired;
						}
						else if ($scope.OnepagerStatus.ActiveBlocked == instance.model.StatusTotal) {
							return $scope.OnepagerStatusSortedStatus.ActiveBlocked;
						}
						else if ($scope.OnepagerStatus.AlertBlocked == instance.model.StatusTotal) {
							return $scope.OnepagerStatusSortedStatus.AlertBlocked;
						}
						else if ($scope.OnepagerStatus.GraceBlocked == instance.model.StatusTotal) {
							return $scope.OnepagerStatusSortedStatus.GraceBlocked;
						}
						else if ($scope.OnepagerStatus.ExpiredBlocked == instance.model.StatusTotal) {
							return $scope.OnepagerStatusSortedStatus.ExpiredBlocked;
						}
						return $scope.OnepagerStatusSortedStatus.Active;
					}

					//function takeDecimal(value)
					//{ return (value < 10) ? "0" + value : value; }

					item.ExpirationDateTime = pageHelper.Date.dateFromJson(item.ExpirationDateTime);
					//item.expirationDateSortValue = '' + takeDecimal(item.ExpirationDateTime.getYear())
          //              + takeDecimal(item.ExpirationDateTime.getMonth()) + takeDecimal(item.ExpirationDateTime.getDate());

					instance.model = item;
					instance.model.OnepagerStatusSortedValue = getOnepagerStatusSortedValue();

					instance.switchAutoRenew = function () {
						instance.model.IsAutoRenew = !instance.model.IsAutoRenew;

						if (!instance.model.IsEnabled) 
							return;

						if (instance.model.Status == $scope.OnepagerStatus.Grace || instance.model.Status == $scope.OnepagerStatus.Expired)
							return;

						httpRepository.onepager.setAutoRenew(instance.model.SubscriptionId, !instance.model.IsAutoRenew)
							.then(function (result) {
								result.sender = "switchAutoRenew";
								instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
							});
					};
					instance.editWebsite = function () {
						httpRepository.onepager.getLoginUrl(instance.model.SubscriptionId)
							.then(function (result) {
								result.sender = "getLoginUrl";
								instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);

								// open link to edit web site
								if (result.Error == false) {
									window.open(result.Result, "_blank");
								}
							});
					};

				},
				onSuccess: function (params) {
					var instance = this.instance;
					if (params.sender == 'switchAutoRenew') {
						instance.model.IsAutoRenew = !instance.model.IsAutoRenew;
					}

					instance.asyncStatus(pageHelper.AsyncStatus.Active);
				},
				onActive: function (params) {
					var instance = this.instance;
				},
				onLoading: function (params) {
					
				},
				onLocked: function (params) {
					var instance = this.instance;
				},
				onError: function (params) {
					var instance = this.instance;
					if (params.sender == 'switchAutoRenew') {
						params.Msg = $scope.onePagerResources.msg_updateAutoRenewError;
					}

					instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
						hasClose: true,
						isAutoHide: true
					});
				}
			});
		}


	}
]);;
app.controller('sslCertificates', ['$rootScope', '$scope', 'httpRepository', 'pageHelper', 'notificationService', 'ncGridParams','popupWindow','$window',
function ($rootScope, $scope, httpRepository, pageHelper, notificationService, ncGridParams, popupWindow, $window) {

    $scope.resources = SslCertificatesProductList;
    $scope.pageHelper = pageHelper;
    $scope.pageNotification = new notificationService.instance();
    $scope.SymantecSunsetMasterKey = SymantecSunsetMasterKey;
    $scope.SiteServerNameUrl = siteServerNameUrl;
    $scope.ServerName = ServerName;
    $scope.SymantecSunsetDate = new Date(SymantecSunsetDate);
    $scope.SymantecSunsetDate = $scope.SymantecSunsetDate.setDate($scope.SymantecSunsetDate.getDate() + 1);
    $scope.currentDate = new Date();
    $scope.SSLInfoRes = SSLInfoRes;
    $scope.popupWindow = popupWindow;
    var ErrorMessage = $scope.SSLInfoRes.static_ErrorMessage_SymantecSunset;
    var InsufficientErrorMessage = $scope.SSLInfoRes.static_InsufficentFundsErrorMsg;
    
    $scope.behavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {

            var instance = this.instance;
            instance.dangerStatuses = ['expired', 'cancelled', 'pendingcancellation', 'purchaseerror','submiterror'];
            instance.alertStatuses = ['replaced', 'waitingapproval', 'inprogress', 'newreplace', 'newpurchase', 'newrenewal'];

            instance.activeNotification = new notificationService.instance();
            
            instance.showLoadPanel = false;
            instance.showNotifications = false;
            instance.showHeader = false;
            
            instance.showContent = false;
            instance.asyncStatus(pageHelper.AsyncStatus.Loading);

            httpRepository.sslCertificates.getList().then(function (result) {
                result.sender = "getModel";
                instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
            });

            instance.sslGrid = new ncGridParams();
            instance.sslGrid.parameters.mapping.isLazyLoading = false;
            instance.sslGrid.parameters.search.serchPropertyNames = ['model.Name'];
            instance.sslGrid.settings.getData = function($defer, sslGrid) {
                $defer.resolve({ Data: instance.model });
            }

            instance.sslGrid.settings.selection.canChangeSelection = function (columnData) {
                return columnData.canChangeSelection();
            }


            $scope.openModal = function (certificateType, certificateId, validYears,sansQty,symantecSunsetDate) {
                $scope.symantecCertificateDetails = {
                    certificateType: certificateType,
                    certificateId: certificateId,
                    validYears: validYears,
                    sansQty : sansQty
                }
                popupWindow.openPopupWindow($scope.symantecCertificateDetails, 'activate', symantecSunsetDate, $scope.SiteServerNameUrl);
            }

            if ($scope.SymantecSunsetMasterKey == 1 && $scope.currentDate > $scope.SymantecSunsetDate) {
                if ($window.localStorage.length > 0) {
                    var notificationResult = popupWindow.replaceOrRefundResult();

                    if (notificationResult.isError != null) {
                        if ((notificationResult.isError === 'false')) {
                            if (notificationResult.action == 'replace') {
                                var ReplaceSuccessMesage = $scope.SSLInfoRes.static_Replace_SuccessMessage;
                                $scope.pageNotification.stuckNotifications.addSuccess(ReplaceSuccessMesage, {
                                    hasClose: true,
                                    isAutoHide: true
                                });
                            }
                            else {
                                var RefundSuccessMesage = $scope.SSLInfoRes.static_Refund_SuccessMessage;
                                $scope.pageNotification.stuckNotifications.addSuccess(RefundSuccessMesage.replace("{0}", notificationResult.symantecCertType), {
                                    hasClose: true,
                                    isAutoHide: true
                                });
                            }
                        }
                        else {
                            var InsufficientErrorMsg=((notificationResult.Message).indexOf('INSUFFICIENTFUNDS')>-1) ? 1 : 0;
                            if (InsufficientErrorMsg)
                            {
                                $scope.pageNotification.stuckNotifications.addError(InsufficientErrorMessage.replace("{0}", $scope.ServerName), {
                                    hasClose: true,
                                    isAutoHide: false
                                });
                            }
                            else {
                                $scope.pageNotification.stuckNotifications.addError(ErrorMessage, {
                                    hasClose: true,
                                    isAutoHide: true
                                });
                            }
                        }
                    }
                    $window.localStorage.clear();
                }
            }
           
   },

        onSuccess: function (params) {
            var instance = this.instance;
            if ($scope.currentDate <= $scope.SymantecSunsetDate) {
                $scope.IsSymantecCertExist = false;
                for (index = 0; index < params.Result.SslCertificates.length; index++) {
                    if (params.Result.SslCertificates[index].ProviderName.toLowerCase() != 'comodo') {
                        $scope.IsSymantecCertExist = true;
                        break;
                    }
                }
            }
            
            if (params.sender == 'getModel') {
              
                var tmpList = [];
                params.Result.SslCertificates.forEach(function (element) {

                    if (element.ActivationDueDate)
                        element.ActivationDueDate = pageHelper.Date.dateFromJson(element.ActivationDueDate);
                    if (element.PurchaseDate)
                        element.PurchaseDate = pageHelper.Date.dateFromJson(element.PurchaseDate);
                        element.ProviderName = element.ProviderName.toLowerCase();
                    if (element.ProviderName == 'verisign')
                        element.ProviderName = 'symantec';
                    if (element.ProviderName == 'geotrust')
                        element.ProviderName = 'geoTrust';
                    if ($scope.SymantecSunsetMasterKey == 1 && element.ProviderName != 'comodo') {
                        if ($scope.SymantecSunsetDate <= $scope.currentDate) { //changes for symantec sunset
                            element.DueDateIsExpired = true;
                            element.ActivationDueDate = $scope.SymantecSunsetDate-1;
                        }
                        else {
                            element.ActivationDueDate = $scope.SymantecSunsetDate-1;
                        }
                    }
                    tmpList.push(createSslCertificate(element, instance));
                });
                instance.model = tmpList;
                instance.showContent = true;
                instance.showLoadPanel = false;
                instance.sslGrid.settings.reload();
                var entity = instance.sslGrid.parameters.ordering.usedEntities[2];
                entity.descending = true;
                instance.sslGrid.settings.ordering.set(entity);
            }
          
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = true;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.alerts.addError(params.Msg, {
                hasClose: true,
                isAutoHide: false
            });
            instance.showNotifications = true;
            instance.showHeader = true;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        }
    });


    function createSslCertificate(model, behavior) {
        return new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                instance.model = model;
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
                instance.model.nameSortValue = instance.model.Name.toLowerCase();
                instance.providerClass = function () {
                    if (instance.model.ProviderName.toLowerCase() == 'comodo')
                        return "icon-ssl-comodo";
                    if (instance.model.ProviderName.toLowerCase() == 'geotrust')
                        return "icon-ssl-geotrust";
                    if (instance.model.ProviderName.toLowerCase() == 'verisign')
                        return "icon-ssl-symantec";
                    if (instance.model.ProviderName.toLowerCase() == 'thawte')
                        return "icon-ssl-thawte";
                    if (instance.model.ProviderName.toLowerCase() == 'symantec')
                        return "icon-ssl-symantec";
                    return "";
                };
            },
            onSuccess: function (params) {
                var instance = this.instance;
               
                instance.asyncStatus(pageHelper.AsyncStatus.Active);

            },
            onActive: function (params) {
                var instance = this.instance;
                instance.aliasError = null;
            },
            onLoading: function (params) {
                var instance = this.instance;
                instance.aliasError = null;
            },
            onLocked: function (params) {
                var instance = this.instance;
            },
            onError: function (params) {
                var instance = this.instance;
            }
        });
    }

}]);;
app.controller('profileBillingAutoRenewalPreferencesCtrl', ['$scope', function ($scope) {
    $scope.setRenewValues = function (domainValue, whoIsGuardValue, premiumDnsValue) {
        $scope.domainAutoRenewEnabled = (domainValue === 'True');
        $scope.whoIsGuardAutoRenewEnabled = (whoIsGuardValue === 'True');
        $scope.premiumDnsAutoRenewEnabled = (premiumDnsValue === 'True');
    }
    $scope.$watch("domainAutoRenewEnabled", function (newValue,oldValue) {
        if (newValue == oldValue) return;
        if (!newValue)
        {
            $scope.whoIsGuardAutoRenewEnabled = false;
            $scope.premiumDnsAutoRenewEnabled = false;
        }
    })

}]);;
app.controller('resetPassword', [
	'$rootScope', '$scope', '$rootScope', 'httpRepository', 'pageHelper', 'notificationService', 'ncGridParams', '$timeout', 'reCAPTCHA',

    function ($rootScope, $scope, $rootScope, httpRepository, pageHelper, notificationService, ncGridParams, $timeout, reCAPTCHA) {
	    	reCAPTCHA.setPublicKey(ReCaptchaPublicKey);


	    $scope.resetType = {
			byEmail: '1',
			byDomain: '2',
			byUserName: '3',
		}

		$scope.isSubmitDisabled = false;
		$scope.resources = ResetPasswordRes;
		$scope.pageHelper = pageHelper;
		$scope.pageNotification = new notificationService.instance();

		$scope.behavior = new pageHelper.AsyncStateBehavior({
			constructor: function() {

				var instance = this.instance;

				instance.activeNotification = new notificationService.instance();
				instance.asyncStatus(pageHelper.AsyncStatus.Loading);
				instance.resetType = $scope.resetType.byUserName;
				instance.isSubmitDisabled = $scope.isSubmitDisabled;
				instance.userName = "";
				instance.domainName = "";
				instance.email = "";
	            instance.captcha = "";
	            instance.showCaptcha = false;
                //check Show captcha
	            canShowCaptcha(instance);
			},

			onSuccess: function(params) {
				var instance = this.instance;
				
				if (params.sender == "resetPassword") {
					instance.activeNotification = $scope.pageNotification.alerts.addSuccess($scope.resources.msg_SuccessfulReset, {
						hasClose: true,
						isAutoHide: false
					});
				}

				instance.userName = "";
				instance.domainName = "";
				instance.email = "";
				instance.isSubmitDisabled = false;

			    // clear dirty flags
				$timeout(function () {
				    if ($scope.ResetPasswordForm.userNameId != null) {
				        $scope.ResetPasswordForm.userNameId.$setPristine();
				    }
				    if ($scope.ResetPasswordForm.emailId != null) {
				        $scope.ResetPasswordForm.emailId.$setPristine();
				    }
				    if ($scope.ResetPasswordForm.domainId != null) {
				        $scope.ResetPasswordForm.domainId.$setPristine();
				    }
				}, 10);

				instance.asyncStatus(pageHelper.AsyncStatus.Active);
			},
			onActive: function(params) {
				var instance = this.instance;
			},
			onLoading: function(params) {
				var instance = this.instance;
			},
			onError: function(params) {
				var instance = this.instance;
				instance.activeNotification = $scope.pageNotification.alerts.addError(params.Msg, {
					hasClose: true,
					isAutoHide: false
				});

				instance.userName = "";
				instance.domainName = "";
				instance.email = "";
				instance.isSubmitDisabled = false;

				// clear dirty flags
				$timeout(function () {
					if ($scope.ResetPasswordForm.userNameId != null) {
						$scope.ResetPasswordForm.userNameId.$setPristine();
					}
					if ($scope.ResetPasswordForm.emailId != null) {
						$scope.ResetPasswordForm.emailId.$setPristine();
					}
					if ($scope.ResetPasswordForm.domainId != null) {
						$scope.ResetPasswordForm.domainId.$setPristine();
					}
				}, 10);

				instance.asyncStatus(pageHelper.AsyncStatus.Active);
			}
		});

		$scope.resetPassword = function() {
            var instance = $scope.behavior;
            $scope.pageNotification.alerts.clear();

            // update empty required fields
		    if ($scope.ResetPasswordForm.$valid != null && !$scope.ResetPasswordForm.$valid) {
		        angular.forEach($scope.ResetPasswordForm.$error.required, function (field) {
		            field.$setDirty();
		        });

		        return;
		    }
		    var reset = function () {
		        var resetKey = instance.userName;
		        if (instance.resetType == $scope.resetType.byEmail)
		            resetKey = instance.email;
		        if (instance.resetType == $scope.resetType.byDomain)
		            resetKey = instance.domainName;

		        instance.isSubmitDisabled = true;

		        var captchaResponse = '';


		        if (angular.isDefined(grecaptcha) && angular.isDefined(grecaptcha.StoredGlobalResponse)) {
		            captchaResponse = grecaptcha.StoredGlobalResponse;
		        }

		        if (angular.isDefined(grecaptcha)) {
		            grecaptcha.reset();
		        }

		        httpRepository.password.reset(instance.resetType, resetKey, captchaResponse).then(function (result) {
		            result.sender = "resetPassword";

		            if (result.Error) {

                        if (result.Errors.length > 0 && result.Errors[0].ErrorDescription == 'captchaError') {
                            result.Msg = $scope.resources.msg_error_captchaNotValid;

                        } else {
                            result.Msg = $scope.resources.error_API;
                        }

		            }

		            instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
		            //check Show captcha
		            canShowCaptcha(instance);
		        });
		    }

		    reset();
		}

		$scope.$watch('behavior.userName', function(newValue, oldValue) {
			if (newValue === oldValue)
				return;

			if (newValue == null)
				newValue = "";

			$scope.ResetPasswordForm.userNameId.$setValidity('loginIncorrect', true);

			// show it as required.
			if (newValue.length == 0) {
				$scope.ResetPasswordForm.userNameId.$setDirty();
				return;
			}

			var isValid = pageHelper.Validation.login(newValue);
			$scope.ResetPasswordForm.userNameId.$setValidity('loginIncorrect', isValid.isValid);
		});

		$scope.$watch('behavior.email', function(newValue, oldValue) {
			if (newValue === oldValue)
				return;

			if (newValue == null)
				newValue = "";

			$scope.ResetPasswordForm.emailId.$setValidity('invalidEmail', true);

			// show it as required.
			if (newValue.length == 0) {
				$scope.ResetPasswordForm.emailId.$setDirty();
				return;
			}

			var isValid = pageHelper.Validation.emailUnicode(newValue);
			$scope.ResetPasswordForm.emailId.$setValidity('invalidEmail', isValid.isValid);
		});

		$scope.$watch('behavior.domainName', function(newValue, oldValue) {
			if (newValue === oldValue)
				return;

			if (newValue == null)
				newValue = "";

			var isValidNoTld = pageHelper.Validation.domainNoTld(newValue);
			var isValidWithTld = pageHelper.Validation.domainWithTld(newValue);

			$scope.ResetPasswordForm.domainId.$setValidity('domainIncorrect', true);
			$scope.ResetPasswordForm.domainId.$setValidity('domainIncorrectTld', true);

			// show it as required.
			if (newValue.length == 0) {
				$scope.ResetPasswordForm.domainId.$setDirty();
				return;
			}

			if (isValidNoTld.isValid) {
				if (newValue.indexOf('.') < 0) {
					$scope.ResetPasswordForm.domainId.$setValidity('domainIncorrectTld', false);
					return;
				}
			}

			$scope.ResetPasswordForm.domainId.$setValidity('domainIncorrect', isValidWithTld.isValid);
		});


	    function canShowCaptcha(instance) {
	        httpRepository.password.showCaptcha().then(function (result) {
	            if (result.Result != null) {
	                if (result.Result.ShowCaptcha == "ON") {
	                    instance.showCaptcha = true;
	                }
	            }
	        });
	    }
	}
]);;
app.controller('marketplaceCancelCtrl', [
    '$scope', '$modalInstance', 'sellDomainRepository', 'pageHelper', '$timeout', 'notificationService', '$filter', '$document', 'sectionViewModal',
    function ($scope, $modalInstance, sellDomainRepository, pageHelper, $timeout, notificationService, $filter, $document, sectionViewModal) {
        $scope.Password = '';
        $scope.sellDomainCancelModel = sectionViewModal;
        $scope.NextPopButtonClicked = false;
        $scope.pageNotification = new notificationService.instance();
        $scope.cancelClick = function () {
            console.log("Dismiss Modal with model : " + $scope.modalpopupcontrollerValue);
            $modalInstance.close('');
        };
        $scope.pageNotificationAruguement = { isAutoHide: true, hasClose: true }

        $scope.CancelMarketplace = function (listingId, domainName)
        {
            $scope.NextPopButtonClicked = true;
            if ($scope.sellDomainCancelModel != undefined) {
                if (!$scope.frmsellDomainCancel.$invalid) {
                    sellDomainRepository.sellDomainInfo.CancelMarketplace( $scope.Password, listingId, domainName).then(
                            function (result)
                            {
                                if (result.Error == true)
                                {
                                    $scope.pageNotification.alerts.clear();
                                    $scope.pageNotification.alerts.addError('We failed to cancel Marketplace listing. ' + result.Msg, $scope.pageNotificationAruguement);
                                    //$modalInstance.asyncStatus(pageHelper.AsyncStatus.Error, { msg: result.Msg });
                                }
                                else
                                {
                                    window.location.href = "/Domains/DomainControlPanel/" + $scope.sellDomainCancelModel.DomainName + "/domain";
                                    //$modalInstance.close(result.Msg,'CANCELLED');
                                    //$scope.pageNotification.alerts.clear();
                                    //$scope.pageNotification.alerts.addSuccess(result.Msg, $scope.pageNotificationAruguement);
                                }
                                //passing the model
                                //$modalInstance.close($scope.sellDomainCancelModel);
                            });
                }
            }

            else
                $scope.IsItemChosen = false;
        };
    }
]);;
app.controller('SellDomainctrl', ['$scope', '$rootScope', 'sellDomainRepository', '$cookies', '$cookieStore', '$filter', '$modal', '$location', 'notificationService', 'pageHelper', '$timeout', '$attrs',
function ($scope, $rootScope, sellDomainRepository, $cookies, $cookieStore, $filter, $modal, $location, notificationService, pageHelper, $timeout, $attrs) {
    $scope.pageHelper = pageHelper;//for call helpers methods from view    
    $scope.pageNotification = new notificationService.instance();
    $scope.SellDomainInfoValidation = SellDomainInfoRes;
    $scope.SellDomainInfo = {};
    $scope.NoSearchOption = { minimumResultsForSearch: -1 };
    $scope.SelectionSize = { maximumSelectionSize: "5" };
    var $ddlAddressListCategory = $('#s2id_ddlcategory');
    $scope.NextButtonClicked = false;
    $scope.showDomainExpirationMessage = false;
    $scope.showDomainExpirationMessageWithLink = false;

    //BASED ON THE COUNTRY CODE FETCH THE COUNTRY NAME AND ASSIGN IT TO THE SCOPE VARIABLE $scope.Country TO DISPLAY THE COUNTRY NAME IN CSR READONLY STEP
    $scope.askingpricecheck = function (MinimumAskingPrice, MaximumAskingPrice) {
        $scope.sellDomain.AskingPrice.$setValidity('pricevalidationmin', true);
        $scope.sellDomain.AskingPrice.$setValidity('pricevalidationmax', true);
        if ($scope.SellDomainInfo != null && $scope.SellDomainInfo.AskingPrice != null) {
            //if ($scope.SellDomainInfo.AskingPrice.toString() =  num.toFixed(2)) {
            //    $scope.sellDomain.AskingPrice.$setValidity('pricevalidationmin', false);
            //}
            if ($scope.SellDomainInfo.AskingPrice.indexOf('.') > 0 && $scope.SellDomainInfo.AskingPrice != Number($scope.SellDomainInfo.AskingPrice).toFixed(2)) {
                $scope.sellDomain.AskingPrice.$setValidity('pricevalidationmin', false);
            }
            if ($scope.SellDomainInfo.AskingPrice.toString().replace(/,/g, "") < Number(MinimumAskingPrice)) {
                $scope.sellDomain.AskingPrice.$setValidity('pricevalidationmin', false);
            }
            else if ($scope.SellDomainInfo.AskingPrice.toString().replace(/,/g, "") > Number(MaximumAskingPrice)) {
                $scope.sellDomain.AskingPrice.$setValidity('pricevalidationmax', false);
            }
        }
    }

    $rootScope.closeLightbox = function () {
        window.location.href = '/Domains/DomainControlPanel/' + $scope.SellDomainInfo.DomainName + '/domain/';
    }

    $scope.pageBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.showLoadPanel = true;
            instance.showContent = false;
            var mpListingId = $("input[type='hidden']#mpListingId").val();
            var domainName = $("input[type='hidden']#domainName").val();
            var expiryDay = $("input[type='hidden']#expiryDay").val();
            var expireDate = $("input[type='hidden']#domainExpireDate").val();
            var expireDateValue = $("input[type='hidden']#domainExpireDateValue").val();
            var renewalMinDays = $("input[type='hidden']#tldRenewalMinDays").val();
            var renewalMaxDays = $("input[type='hidden']#tldRenewalMaxDays").val();
            var reactivateMaxDays = $("input[type='hidden']#tldReactivateMaxDays").val();
            var IsWhoisGuard = $("input[type='hidden']#IsWhoisGuard").val();

            sellDomainRepository.sellDomainInfo.getSellDomainInfo(mpListingId).then(function (result) {
                if (result.Result != null) {
                    $scope.SellDomainInfo = result.Result;
                    $scope.SellDomainInfo.DomainName = domainName;
                    $scope.SellDomainInfo.DomainExpireDays = expiryDay;
                    $scope.SellDomainInfo.DomainExpiredDate = $filter('date')(new Date($scope.SellDomainInfo.DomainExpiredDate), 'MMM dd, yyyy');
                    if (mpListingId == null || mpListingId == '') {
                        $scope.SellDomainInfo.DomainExpireDate = expireDate;
                        $scope.SellDomainInfo.DomainExpireDateValue = new Date(expireDateValue);
                    }

                    if ($scope.SellDomainInfo.SelectedCategory != null) {
                        $scope.SellDomainInfo.SelectedCategory = $scope.SellDomainInfo.SelectedCategory.split(',');
                    }
                    $scope.DerivedCategories = [];
                    $scope.Other = {};
                    angular.forEach($scope.SellDomainInfo.CategoryList, function (val, key) {

                        if (val != 'Other') {
                            $scope.temp = {};
                            $scope.temp.key = key;
                            $scope.temp.val = val;
                            $scope.DerivedCategories.push($scope.temp);
                        }
                        else {
                            $scope.Other.key = key;
                            $scope.Other.val = val;
                        }
                    });

                    $scope.DerivedCategories = $filter('orderBy')($scope.DerivedCategories, 'val')
                    if ($scope.Other != null) {
                        $scope.DerivedCategories.push($scope.Other);
                        $scope.Other = {};
                    }
                    //By Default Set Empty
                    if ($scope.SellDomainInfo != null && $scope.SellDomainInfo.AskingPrice != null && $scope.SellDomainInfo.AskingPrice.toString() == "0") {
                        $scope.SellDomainInfo.AskingPrice = "";
                    }

                    if (IsWhoisGuard == 'true') {
                        $scope.pageNotification.alerts.addWarning($scope.SellDomainInfoValidation.static_WhoisguardSiteAlert_Message, { hasClose: true, isAutoHide: false });
                    }

                    if ($scope.SellDomainInfo.DomainExpireDays <= 30) {
                        if (expiryDay < renewalMaxDays && expiryDay > renewalMinDays) {
                            $scope.showDomainExpirationMessageWithLink = true;
                        }
                        else {
                            $scope.showDomainExpirationMessage = true;
                        }
                    }
                }
            });
            instance.asyncStatus(pageHelper.AsyncStatus.Active);

            instance.SaveChanges = function () {
                $scope.pageNotification.alerts.clear();
                $scope.NextButtonClicked = true;
                if ($scope.sellDomain != undefined) {
                    if (!$scope.sellDomain.$invalid) {
                        sellDomainRepository.sellDomainInfo.insertSellDomainInfo($scope.SellDomainInfo).then(
                               function (result) {


                                   if (result.Error == true) {
                                       $scope.pageNotification.stuckNotifications.addError(result.Msg, {
                                           hasClose: true,
                                           isAutoHide: true
                                       });

                                       //instance.asyncStatus(pageHelper.AsyncStatus.Error, { msg: result.Msg });
                                   }
                                   else {
                                       window.location.href = "/Domains/DomainControlPanel/" + $scope.SellDomainInfo.DomainName + "/domain";

                                   }

                                   //else{
                                   //    instance.asyncStatus((suceessMsg == true) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, { Message: result.Msg });
                                   //}
                                   //else if (result.Result != null && result.Result)
                                   //{
                                   //    suceessMsg = true;
                                   //    instance.asyncStatus(pageHelper.AsyncStatus.Success, { msg: result.Msg });
                                   //}
                                   //else
                                   //{
                                   //    suceessMsg = true;
                                   //    instance.asyncStatus(pageHelper.AsyncStatus.Success, { msg: result.Msg });
                                   //}

                               });
                    }
                    else {
                        $scope.pageNotification.alerts.addError($scope.SellDomainInfoValidation.error_Site_InvalidForm, {
                            hasClose: true,
                            isAutoHide: false
                        });
                    }
                }
                else {
                    $scope.pageNotification.alerts.addError($scope.SellDomainInfoValidation.error_Site_InvalidForm, {
                        hasClose: true,
                        isAutoHide: false
                    });
                }
            }

        },
        onSuccess: function (params) {
            var instance = this.instance;
            if (params.msg != null && params.msg != '') {
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(params.msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
            else
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;
        },
        onLoading: function (params) {
            var instance = this.instance;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.msg, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });


}]);;
app.controller('EquivalentComodoForSymantecCtrl', [
    '$scope', '$window','$modal', '$modalInstance','sslRepository', 'popupWindow', 'symantecCertDetails', 'comodoDetails', 'actionName','symantecSunsetDate','siteServerNameUrl',
function ($scope, $window, $modal, $modalInstance, sslRepository, popupWindow, symantecCertDetails, comodoDetails, actionName,symantecSunsetDate,siteServerNameUrl)
    {

    $scope.symantecCertDetails = symantecCertDetails;
    $scope.comodoDetails = comodoDetails;
    $scope.actionName = actionName;
    $scope.sslInfoRes = SSLInfoRes;
    $scope.symantecSunsetDate = symantecSunsetDate;
    $scope.siteServerNameUrl = siteServerNameUrl;
    $scope.messageBodyForSymantecReplace = $scope.sslInfoRes.static_MessageBodyForSymantecReplace.replace("{0}", $scope.symantecSunsetDate)
    $scope.symantecStopMessage = $scope.sslInfoRes.static_SymantecStopMessage.replace("{0}", $scope.symantecSunsetDate);
    $scope.symantecCertType =$scope.symantecCertDetails.certificateType;
    $scope.symantecCertId = $scope.symantecCertDetails.certificateId;
    $scope.comodoCertificate = $scope.comodoDetails.Result.CertificateType;
    $scope.price = $scope.comodoDetails.Result.ComodoPrice;
    $scope.profit = $scope.comodoDetails.Result.Profit;
    $scope.yourSavings = $scope.comodoDetails.Result.YourSavings;
    $scope.validationLevel = $scope.comodoDetails.Result.ValidationLevel;
    $scope.domainsInclude = $scope.comodoDetails.Result.DomainsInclude;
    $scope.refund = $scope.comodoDetails.Result.Refund;
    $scope.greenBar = ($scope.comodoDetails.Result.Greenbar == true) ?  true : false;
    $scope.noOfSans = $scope.symantecCertDetails.sansQty;
    $scope.addonDomains = ($scope.comodoDetails.Result.AddonDomains == 0) ? false : $scope.comodoDetails.Result.AddonDomains;
    $scope.buttonClicked = false;

    $scope.closeModal = function () {
        $modalInstance.close('');
    }

    $scope.openPrompt = function () {
        $modalInstance.close('');
        modalConfirm($scope.sslInfoRes.static_RefundTitle.replace("{0}", $scope.symantecCertType), $scope.sslInfoRes.static_RefundMessage, modalResult);
    }

    $scope.replaceComodoSSL = function () {

        if ($scope.buttonClicked==true) {
            return false;
        }

        $scope.buttonClicked = true;

        if ($scope.actionName.toLowerCase() == "activate")
        {
            sslRepository.sslInfo.ReplaceEquivalentComodoCertificateForSymantec($scope.comodoCertificate, $scope.symantecCertDetails.validYears, $scope.symantecCertId, $scope.noOfSans).then(function (result) {
                    popupWindow.replaceOrRefund(result, 'replace', $scope.symantecCertType);
                    popupWindow.redirectToPage();
            });
        }
        else if ($scope.actionName.toLowerCase() == "renew")
        {
            $window.location.href = $scope.siteServerNameUrl + "/cart/addtocart.aspx?producttype=ssl&action=renew&cids=" + $scope.symantecCertId;
        }
        else
        {
            var comodoCertificateForBuyNew = getComodoCertificateTypeForBuyNew($scope.comodoCertificate);
            $window.location.href = $scope.siteServerNameUrl + "/cart/addtocart.aspx?producttype=ssl&product=" + comodoCertificateForBuyNew + "&action=purchase";
        }
    }

    function modalResult(mResult) {
       if (mResult == true) {
            sslRepository.sslInfo.GetRefundForSymantecCertificate($scope.symantecCertId).then(function (result) {
                popupWindow.replaceOrRefund(result, 'refund', $scope.symantecCertType);
                    popupWindow.redirectToPage();
                });      
               }
       $.magnificPopup.close();
    }

    function getComodoCertificateTypeForBuyNew(comodoCertificateType) {
        var certificateType = comodoCertificateType.replace(/ /g, '-').toLowerCase();
        if (certificateType == 'multi-domain-ssl'
            || certificateType == 'ev-multi-domain-ssl')
        {
            certificateType = certificateType.replace(/^/, 'comodossl-');
        }
        return certificateType;
    }
    }

]);
;
app.controller('productPageCtrl', ['$scope', 'popupWindow', 'sslRepository', 'notificationService','$window',
function ($scope, popupWindow, sslRepository, notificationService, $window) {

    $scope.pageNotification = new notificationService.instance();

    $scope.SSLInfoRes = SSLInfoRes;
    $scope.SymantecSunsetMasterKey = SymantecSunsetMasterKey;
    $scope.SymantecSunsetDate = new Date(SymantecSunsetDate);
    $scope.SymantecSunsetDate = $scope.SymantecSunsetDate.setDate($scope.SymantecSunsetDate.getDate() + 1);
    $scope.ServerName = ServerName;
    $scope.currentDate = new Date();
    var ErrorMessage = $scope.SSLInfoRes.static_ErrorMessage_SymantecSunset;
    var InsufficientErrorMessage = $scope.SSLInfoRes.static_InsufficentFundsErrorMsg;

    $scope.productDetails = function (certificateType,symantecSunsetDate,siteServerNameurl,validYears,sansQty) {
        $scope.symantecCertificateDetails = {
            certificateId:0,
            certificateType: certificateType,
            validYears: validYears,
            sansQty: sansQty
            }
        $scope.symantecSunsetDate = symantecSunsetDate;
        $scope.siteServerNameurl = siteServerNameurl;
    }
    
    if ($scope.SymantecSunsetMasterKey == 1 && $scope.currentDate > $scope.SymantecSunsetDate) {
        if ($window.localStorage.length > 0) {
            var notificationResult = popupWindow.replaceOrRefundResult();

            if (notificationResult.isError != null) {
                if ((notificationResult.isError === 'false')) {
                    if (notificationResult.action == 'replace') {
                        var ReplaceSuccessMesage = $scope.SSLInfoRes.static_Replace_SuccessMessage;
                        $scope.pageNotification.stuckNotifications.addSuccess(ReplaceSuccessMesage, {
                            hasClose: true,
                            isAutoHide: true
                        });
                    }
                    else {
                        var RefundSuccessMesage = $scope.SSLInfoRes.static_Refund_SuccessMessage;
                        $scope.pageNotification.stuckNotifications.addSuccess(RefundSuccessMesage.replace("{0}", notificationResult.symantecCertType), {
                            hasClose: true,
                            isAutoHide: true
                        });
                    }
                }
                else {
                    var InsufficientErrorMsg = ((notificationResult.Message).indexOf('INSUFFICIENTFUNDS') > -1) ? 1 : 0;
                    if (InsufficientErrorMsg) {
                        $scope.pageNotification.stuckNotifications.addError(InsufficientErrorMessage.replace("{0}", $scope.ServerName), {
                            hasClose: true,
                            isAutoHide: false
                        });
                    }
                    else {
                        $scope.pageNotification.stuckNotifications.addError(ErrorMessage, {
                            hasClose: true,
                            isAutoHide: true
                        });
                    }
                }
            }
            $window.localStorage.clear();
        }
    }
                    
    $scope.openModal = function (certificateId, actionName) {
        $scope.symantecCertificateDetails.certificateId = certificateId;
        popupWindow.openPopupWindow($scope.symantecCertificateDetails, actionName, $scope.symantecSunsetDate, $scope.siteServerNameurl);
    }

}]);
;
app.controller('sslChooseContactModalCtrl', [
    '$scope', '$modalInstance', 'sslRepository', 'pageHelper', '$timeout', 'notificationService', '$filter', '$document',
    function ($scope, $modalInstance, sslRepository, pageHelper, $timeout, notificationService, $filter, $document)
    {
        $scope.cancelClick = function ()
        {
            console.log("Dismiss Modal with model : " + $scope.modalpopupcontrollerValue);
            $modalInstance.close('');
            //$modalInstance.dismiss('cancel');
        };
        $scope.IsItemChosen = false;
        $scope.IsLoadingCompleted = false;
        $scope.sslnotification = new notificationService.instance();

        $scope.SaveChanges = function ()
        {
            if ($scope.selectedaddress != undefined) {
                if (!$scope.frmEditAddonDomain.$invalid)
                    $modalInstance.close($scope.selectedAddressList);
            }
            else
                $scope.IsItemChosen = false;
        };
        
        //FUNCTION TO GET THE ADDRESS INFO AND BIND IN DROPDOWN IN POPUP
        $scope.BindAddressNameInDropdown = new pageHelper.AsyncStateBehavior(
           {
               constructor: function () {
                   var instance = this.instance;
                   $scope.IsItemChosen = true;
                   $scope.sslnotification.alerts.clear();
                  // instance.activeNotification = $scope.sslnotification.stuckNotifications.addLoading('<B>Loading Addressess.</B> Please wait..', false);
                       sslRepository.sslInfo.GetAddressInformation().then(function (result) {
                               instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                           });
               },
               onSuccess: function (params) {
                   $scope.addressListItemsArray = [];
                   $scope.addressListItemsArray.push(params.Result.PrimaryAddressDetails);
                   for (var i = 0; i < params.Result.AlternativeAddressDetails.length; i++) {
                       $scope.addressListItemsArray.push(params.Result.AlternativeAddressDetails[i]);
                   }
                   $('.opac').addClass('page-load').css({ 'text-align': 'left', 'padding': '0em', 'opacity': '0.5', 'background-position': 'center 8.1em' });
                   $scope.IsLoadingCompleted = true;
                   var instance = this.instance;
                   instance.asyncStatus(pageHelper.AsyncStatus.Active);
               },
               onActive: function (params) {
                   $('.opac').delay(250).queue(function () {
                       $(this).removeClass('page-load').css({ 'text-align': 'left', 'padding': '0em', 'opacity': '0.9' });
                   });
               }
               
           })
        $scope.selectedAddressList = {
            FirstName: '',
            LastName: '',
            Organization: '',
            Address1: '',
            Address2:'',
            Country: '',
            Phone: '',
            PhoneExt: '',
            Fax: '',
            FaxExt: '',
            EmailAddress:'',
            StateProvince:'',
            City:'',
            PostalCode: '',
            JobTitle:''
        };
        $scope.DisplayFirstName = '';
        $scope.DisplayLastName = '';
        $scope.DisplayOrganization = '';
        $scope.DisplayAddress1 = '';
        $scope.DisplayAddress2 = '';
        $scope.DisplayCountry = '';
        $scope.DisplayPhone = '';
        $scope.DisplayPhoneExt = '';
        $scope.DisplayFax = '';
        $scope.DisplayFaxExt = '';
        $scope.DisplayEmailAddress = '';
        $scope.DisplayStateProvince = '';
        $scope.DisplayCity = '';
        $scope.DisplayPostalCode = '';
        $scope.DisplayCityStatePostalCode='';

        $scope.addressChange = function (addressName) {
            for (var i = 0; i < $scope.addressListItemsArray.length; i++) {
                if ($scope.addressListItemsArray[i].AddressName.trim() == addressName.trim()) {
                    if ($scope.addressListItemsArray[i].Address.FirstName != '' && $scope.addressListItemsArray[i].Address.FirstName != null && $scope.addressListItemsArray[i].Address.FirstName != undefined) {
                        $scope.DisplayFirstName = $scope.addressListItemsArray[i].Address.FirstName.trim();
                    }
                    else {
                        $scope.DisplayFirstName = '';
                    }

                    if ($scope.addressListItemsArray[i].Address.LastName != '' && $scope.addressListItemsArray[i].Address.LastName != null && $scope.addressListItemsArray[i].Address.LastName != undefined) {
                        $scope.DisplayLastName = $scope.addressListItemsArray[i].Address.LastName.trim();
                    }
                    else {
                        $scope.DisplayLastName = '';
                    }
                    if ($scope.addressListItemsArray[i].Address.Organization != '' && $scope.addressListItemsArray[i].Address.Organization != null && $scope.addressListItemsArray[i].Address.Organization != undefined) {
                        $scope.DisplayOrganization = $scope.addressListItemsArray[i].Address.Organization.trim();
                    }
                    else {
                        $scope.DisplayOrganization = '';
                    }
                    if ($scope.addressListItemsArray[i].Address.Address1 != '' && $scope.addressListItemsArray[i].Address.Address1 != null && $scope.addressListItemsArray[i].Address.Address1 != undefined) {
                        $scope.DisplayAddress1 = $scope.addressListItemsArray[i].Address.Address1.trim();
                    }
                    else {
                        $scope.DisplayAddress1 = '';
                    }
                    if ($scope.addressListItemsArray[i].Address.Address2 != '' && $scope.addressListItemsArray[i].Address.Address2 != null && $scope.addressListItemsArray[i].Address.Address2 != undefined) {
                        $scope.DisplayAddress2 = $scope.addressListItemsArray[i].Address.Address2.trim();
                    }
                    else {
                        $scope.DisplayAddress2 = '';
                    }
                    if ($scope.addressListItemsArray[i].Address.Country != '' && $scope.addressListItemsArray[i].Address.Country != null && $scope.addressListItemsArray[i].Address.Country != undefined) {
                        $scope.DisplayCountry = $scope.addressListItemsArray[i].Address.Country.trim();
                       
                    }
                    else {
                        $scope.DisplayCountry = '';
                    }
                    if ($scope.addressListItemsArray[i].Address.Phone != '' && $scope.addressListItemsArray[i].Address.Phone != null && $scope.addressListItemsArray[i].Address.Phone != undefined) {
                        $scope.DisplayPhone = $scope.addressListItemsArray[i].Address.Phone.trim();
                    }
                    else {
                        $scope.DisplayPhone = '';
                    }
                    if ($scope.addressListItemsArray[i].Address.PhoneExt != '' && $scope.addressListItemsArray[i].Address.PhoneExt != null && $scope.addressListItemsArray[i].Address.PhoneExt != undefined) {
                        $scope.DisplayPhoneExt = $scope.addressListItemsArray[i].Address.PhoneExt.trim();
                    }
                    else {
                        $scope.DisplayPhoneExt = '';
                    }
                    if ($scope.addressListItemsArray[i].Address.Fax != '' && $scope.addressListItemsArray[i].Address.Fax != null && $scope.addressListItemsArray[i].Address.Fax != undefined) {
                        $scope.DisplayFax = $scope.addressListItemsArray[i].Address.Fax.trim();
                    }
                    else {
                        $scope.DisplayFax = '';
                    }

                    if ($scope.addressListItemsArray[i].Address.FaxExt != '' && $scope.addressListItemsArray[i].Address.FaxExt != null && $scope.addressListItemsArray[i].Address.FaxExt != undefined) {
                        $scope.DisplayFaxExt = $scope.addressListItemsArray[i].Address.FaxExt.trim();
                    }
                    else {
                        $scope.DisplayFaxExt = '';
                    }
                    if ($scope.addressListItemsArray[i].Address.EmailAddress != '' && $scope.addressListItemsArray[i].Address.EmailAddress != null && $scope.addressListItemsArray[i].Address.EmailAddress != undefined) {
                        $scope.DisplayEmailAddress = $scope.addressListItemsArray[i].Address.EmailAddress.trim();
                    }
                    else {
                        $scope.DisplayEmailAddress = '';
                    }
                    if ($scope.addressListItemsArray[i].Address.StateProvince != '' && $scope.addressListItemsArray[i].Address.StateProvince != null && $scope.addressListItemsArray[i].Address.StateProvince != undefined) {
                        $scope.DisplayStateProvince = $scope.addressListItemsArray[i].Address.StateProvince.trim();
                    }
                    else {
                        $scope.DisplayStateProvince = '';
                    }

                    if ($scope.addressListItemsArray[i].Address.City != '' && $scope.addressListItemsArray[i].Address.City != null && $scope.addressListItemsArray[i].Address.City != undefined) {
                        $scope.DisplayCity = $scope.addressListItemsArray[i].Address.City.trim();
                    }
                    else {
                        $scope.DisplayCity = '';
                    }

                    if ($scope.addressListItemsArray[i].Address.PostalCode != '' && $scope.addressListItemsArray[i].Address.PostalCode != null && $scope.addressListItemsArray[i].Address.PostalCode != undefined) {
                        $scope.DisplayPostalCode = $scope.addressListItemsArray[i].Address.PostalCode.trim();
                    }
                    else {
                        $scope.DisplayPostalCode = '';
                    }

                    if ($scope.DisplayStateProvince!='' && $scope.DisplayPostalCode!='') {
                        $scope.DisplayCityStatePostalCode = $scope.DisplayCity + ', ' + $scope.DisplayStateProvince + ', ' + $scope.DisplayPostalCode;

                    }
                    else if ($scope.DisplayStateProvince != '' && $scope.DisplayPostalCode == '') {
                        $scope.DisplayCityStatePostalCode = $scope.DisplayCity + ', ' + $scope.DisplayStateProvince;

                    }
                    else if ($scope.DisplayStateProvince == '' && $scope.DisplayPostalCode != '') {
                        $scope.DisplayCityStatePostalCode = $scope.DisplayCity + ', ' + $scope.DisplayPostalCode;

                    }
                    else {
                        $scope.DisplayCityStatePostalCode = $scope.DisplayCity;
                    }
                    $.ajax({
                        type: 'GET',
                        contentType: 'application/json; charset=utf-8',
                        cache: false,
                        async:false,
                        url: '/domains/ssl/GetFormattedPhoneAndFax',
                        data: {
                            CountryCode: encodeURI($scope.DisplayCountry),
                            Fax: encodeURI($scope.DisplayFax),
                            FaxExt: encodeURI($scope.DisplayFaxExt),
                            Phone:encodeURI($scope.DisplayPhone),
                            PhoneExt: encodeURI($scope.DisplayPhoneExt)
                        },
                        success: function (data) {
                            $scope.DisplayPhone = data.split('~')[0];
                            $scope.DisplayFax = data.split('~')[1];
                            $scope.DisplayCountry = data.split('~')[2];
                        },
                        error: function (msg) {
                            alert("Error:" + msg);
                        }

                    });


                    $scope.selectedAddressList = {
                        FirstName: $scope.addressListItemsArray[i].Address.FirstName,
                        LastName:$scope.addressListItemsArray[i].Address.LastName,
                        Organization: $scope.addressListItemsArray[i].Address.Organization,
                        Address1: $scope.addressListItemsArray[i].Address.Address1,
                        Address2: $scope.addressListItemsArray[i].Address.Address2,
                        Country: $scope.addressListItemsArray[i].Address.Country,
                        Phone: $scope.addressListItemsArray[i].Address.Phone,
                        PhoneExt: $scope.addressListItemsArray[i].Address.PhoneExt,
                        Fax: $scope.addressListItemsArray[i].Address.Fax,
                        FaxExt: $scope.addressListItemsArray[i].Address.FaxExt,
                        EmailAddress: $scope.addressListItemsArray[i].Address.EmailAddress,
                        StateProvince: $scope.addressListItemsArray[i].Address.StateProvince,
                        City: $scope.addressListItemsArray[i].Address.City,
                        PostalCode: $scope.addressListItemsArray[i].Address.PostalCode,
                        JobTitle: $scope.addressListItemsArray[i].Address.JobTitle

                    };

                    break;
                }
            }
        };

     
    }
]);;
app.controller('sslEditAddonDomainModalCtrl', [
    '$scope', '$modalInstance', 'sslRepository', 'pageHelper', '$timeout', 'notificationService', '$filter', '$document', 'addonDomainName', 'primaryDomainDetails', 'IsSanActivationWithSubDomainsOnly', 'IsSanReissueEditWithSubDomainOnly',
    function ($scope, $modalInstance, sslRepository, pageHelper, $timeout, notificationService, $filter, $document, addonDomainName, primaryDomainDetails, IsSanActivationWithSubDomainsOnly, IsSanReissueEditWithSubDomainOnly) {
        $scope.cancelClick = function () {
            $modalInstance.close('');
            //$modalInstance.dismiss('cancel');
        };

        $scope.editedaddondomain = addonDomainName.CommonName;

        $scope.SaveChanges = function () {
            if (!$scope.frmEditAddonDomain.$invalid)
                $modalInstance.close($scope.editedaddondomain);

        };


        $scope.subDomainName = '';
        $scope.IsSanActivationWithSubDomainsOnly = false;
        $scope.IsSanReissueEditWithSubDomainOnly = false;
        //This function returns the domainName only from the argument we passsed
        $scope.validateDomain = new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                instance.click = function (domainName, subDomainName, IsSanActivationWithSubDomainsOnly, IsSanReissueEditWithSubDomainOnly) {
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading)
                    $scope.subDomainName = subDomainName;
                    $scope.IsSanActivationWithSubDomainsOnly = IsSanActivationWithSubDomainsOnly;
                    $scope.IsSanReissueEditWithSubDomainOnly = IsSanReissueEditWithSubDomainOnly;
                    sslRepository.sslInfo.ValidateDomainInfo(domainName).then(function (result) {
                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                    });
                }
            },
            onSuccess: function (params) {
                var instance = this.instance;
                instance.showLoadPanel = false;
                newDomain = params.Result;
                if ($scope.IsSanActivationWithSubDomainsOnly) {
                    if (newDomain == "") {
                        $scope.frmEditAddonDomain.EditAddonDomainField.$setValidity('invalidSan', false);
                    }
                    else {
                        if (newDomain != '' && newDomain.toLowerCase() != $scope.subDomainName.toLowerCase()) {
                            $scope.frmEditAddonDomain.EditAddonDomainField.$setValidity('invalidSan', false);
                        }
                        else {
                            $scope.frmEditAddonDomain.EditAddonDomainField.$setValidity('invalidSan', true);
                        }
                    }
                }
                if ($scope.IsSanReissueEditWithSubDomainOnly) {
                    if (newDomain == "") {
                        $scope.frmEditAddonDomain.EditAddonDomainField.$setValidity('invalidSubDomain', false);
                    }
                    else {
                        if (newDomain != '' && newDomain.toLowerCase() != $scope.subDomainName.toLowerCase()) {
                            $scope.frmEditAddonDomain.EditAddonDomainField.$setValidity('invalidSubDomain', false);
                        }
                        else {
                            $scope.frmEditAddonDomain.EditAddonDomainField.$setValidity('invalidSubDomain', true);
                        }
                    }
                }

            },
            onActive: function (params) {
                var instance = this.instance;
            },
            onLoading: function (params) {
                var instance = this.instance;
            },
            onLocked: function (params) {
                var instance = this.instance;
            },
            onError: function (params) {
                var instance = this.instance;
                //instance.showLoadPanel = false;
                instance.showErrors = true;
                //$modalInstance.asyncStatus(pageHelper.AsyncStatus.Error, { msg: params.Msg });
                $scope.pageNotification.alerts.addError(params.Msg, { hasClose: true, isAutoHide: true });
            }
        });

        $scope.$watch('editedaddondomain', function (newValue, oldValue) {
                if (IsSanActivationWithSubDomainsOnly)
                {
                    var domName = primaryDomainDetails.DomainName;
                    //alert(domName);
                    //if (!newValue.endsWith(domName) && newValue != "") {
                    //    $scope.frmEditAddonDomain.EditAddonDomainField.$setValidity('invalidSan', false);
                    //}
                    //else {
                    //    $scope.frmEditAddonDomain.EditAddonDomainField.$setValidity('invalidSan', true);
                    //}
                    //splitDomain.length > 1
                    if (newValue != "") {
                        //var splitDomain = newValue.split('.');
                        //var newDomain = splitDomain[splitDomain.length - 2] + '.' + splitDomain[splitDomain.length - 1];
                       
                        $scope.validateDomain.click(newValue, domName.toLowerCase(), IsSanActivationWithSubDomainsOnly, IsSanReissueEditWithSubDomainOnly);

                        /*if (newDomain != '' && newDomain.toLowerCase() != domName.toLowerCase()) {
                            $scope.frmEditAddonDomain.EditAddonDomainField.$setValidity('invalidSan', false);
                        }
                        else {
                            $scope.frmEditAddonDomain.EditAddonDomainField.$setValidity('invalidSan', true);
                        }*/
                    }

                }
                if (IsSanReissueEditWithSubDomainOnly) {
                    var subDomainName = addonDomainName.DomainName;
                    if (newValue != "") {
                        //var splitDomain = newValue.split('.');
                        //var newDomain = splitDomain[splitDomain.length - 2] + '.' + splitDomain[splitDomain.length - 1];
                        $scope.validateDomain.click(newValue, subDomainName.toLowerCase(), IsSanActivationWithSubDomainsOnly, IsSanReissueEditWithSubDomainOnly);
                        /*if (newDomain != '' && newDomain.toLowerCase() != subDomainName.toLowerCase()) {
                            $scope.frmEditAddonDomain.EditAddonDomainField.$setValidity('invalidSubDomain', false);
                        }
                        else {
                            $scope.frmEditAddonDomain.EditAddonDomainField.$setValidity('invalidSubDomain', true);
                        }*/
                    }
                }
            //}
        });
    }
]);;
app.controller('sslEditDCVCtrl', ['$scope', '$rootScope', 'sslRepository', '$cookies', '$cookieStore', '$filter', '$modal', '$location', 'notificationService', 'pageHelper', '$timeout', '$attrs',
function ($scope, $rootScope, sslRepository, $cookies, $cookieStore, $filter, $modal, $location, notificationService, pageHelper, $timeout, $attrs) {

    //INITIALIZATION FUNCTION. NOTE: THIS WILL BE CALLED ONLY ALL THE SCOPE VARIABLES INITIATED
    $scope.sslnotificationAlertArguments = { isAutoHide: false, hasClose: true }
    $scope.IsMinimumSanSatisfied = false;
    $scope.addonDomains = [];
    $scope.SSLInfoRes = SSLInfoRes;
    $scope.SSLInfoValidation = SSLInfoValidation;
    $scope.PrimaryDomainIgnoreSearchOption = {};
    $scope.SecondaryDomainIgnoreSearchOption = [];
    this.initialize = function (model)
    {

        $scope.SSLInfoSectionViewModel = model;
        if ($scope.SSLInfoSectionViewModel.PrimaryDomainDetail == null) {
            $scope.SSLInfoSectionViewModel.PrimaryDomainDetail = [];
            var primaryDomainDetails = [];
            primaryDomainDetails.CommonName = "";
            primaryDomainDetails.DomainName = "";
            primaryDomainDetails.ValidationType = "";
            primaryDomainDetails.ValidationValue = "";
            primaryDomainDetails.disabled = false;
            $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.push(primaryDomainDetails)
        }
        else {
            $scope.selecteddcvmethod = $scope.GetDcvMethodName($scope.SSLInfoSectionViewModel.PrimaryDomainDetail.ValidationType);
            if ($scope.SSLInfoSectionViewModel.PrimaryDomainDetail.ValidationValue != "" && $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.ValidationValue != undefined && $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.ValidationValue != NaN) {
                $scope.primarydomainapproveremail = $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.ValidationValue;
            }
            else {
                $scope.primarydomainapproveremail = $scope.SSLInfoRes.static_SelectOption;
            }

            $scope.AddDCVMethodToList($scope.selecteddcvmethod, $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.CommonName, $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.ValidationValue, "PRIMARY")

        }

        if ($scope.SSLInfoSectionViewModel.SanDomainsDetail != null) {
            $scope.selecteddcvmethodofaddondomain = [];
            $scope.addonDomainApproverEmail = [];
            for (index = 0; index < $scope.SSLInfoSectionViewModel.SanDomainsDetail.length; index++) {
                var addonListItems = [];
                addonListItems.CommonName = $scope.SSLInfoSectionViewModel.SanDomainsDetail[index].CommonName;
                addonListItems.DomainName = $scope.SSLInfoSectionViewModel.SanDomainsDetail[index].DomainName;
                addonListItems.ValidationType = $scope.GetDcvMethodName($scope.SSLInfoSectionViewModel.SanDomainsDetail[index].ValidationType);
                $scope.selecteddcvmethodofaddondomain[index] = $scope.GetDcvMethodName($scope.SSLInfoSectionViewModel.SanDomainsDetail[index].ValidationType)
                if ($scope.SSLInfoSectionViewModel.SanDomainsDetail[index].ValidationValue != "" && $scope.SSLInfoSectionViewModel.SanDomainsDetail[index].ValidationValue != undefined && $scope.SSLInfoSectionViewModel.SanDomainsDetail[index].ValidationValue != NaN) {
                    addonListItems.ValidationValue = $scope.SSLInfoSectionViewModel.SanDomainsDetail[index].ValidationValue;

                    $scope.addonDomainApproverEmail[index] = $scope.SSLInfoSectionViewModel.SanDomainsDetail[index].ValidationValue;
                }

                else
                    $scope.addonDomainApproverEmail[index] = $scope.SSLInfoRes.static_SelectOption;

                $scope.addonDomains.push(addonListItems);
            }
        }

        $scope.addonDomainCount = 0;
        for (var index = 0; index < $scope.SSLInfoSectionViewModel.SanDomainsDetail.length; index++) {
            if ($scope.SSLInfoSectionViewModel.SanDomainsDetail[index].CommonName != "") {
                $scope.addonDomainCount += 1;
            }
        }

        $scope.GetApproverEmailList.click();
        for (var i = 0; i < $scope.addonDomains.length; i++) {
            var resultsetItem = [];
            resultsetItem.NAME = $scope.addonDomains[i].CommonName;
            resultsetItem.DCV = $scope.addonDomains[i].ValidationType;
            resultsetItem.EMAILADDRESS = $scope.addonDomains[i].ValidationValue;
            resultsetItem.DOMAINTYPE = 'SECONDARY';
            $scope.selecteddcvmethodofaddondomain[i] = resultsetItem.DCV
            if (resultsetItem.DCV.toUpperCase() == 'EMAIL' && $scope.addonDomains[i].CommonName != "") {
                //$scope.domainstovalidateviaemail.push(resultsetItem)
                $scope.GetApproverEmailListForAddOns.click($scope.addonDomains[i].CommonName, i);
            }
            $scope.AddDCVMethodToList(resultsetItem.DCV, resultsetItem.NAME, resultsetItem.EMAILADDRESS, resultsetItem.DOMAINTYPE, i, 'PAGELOAD')

        }


    }
    $scope.sslnotification = new notificationService.instance();
    $scope.select2Options = { minimumResultsForSearch: -1 };
    $scope.addonDcvMethodDisabled = false;
    $scope.domainstovalidateviaemail = [];
    $scope.domainstovalidateviahttp = [];
    $scope.domainstovalidateviadns = [];
    $scope.addondomainsEmail = [];

    $scope.selecteddcvmethod = "";

    // SELECT 2 TYPE OF DROPDOWN LIST MAKING IT AS NORMAL DROPDOWN BY AVOIDING THE SEARCH OPTION IN IT
    $scope.NoSearchOption = { minimumResultsForSearch: -1 };


    //GETTING APPROVER EMAIL LIST FOR THE PRIMARY DOMAIN
    $scope.GetApproverEmailList = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.click = function () {

                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                sslRepository.sslInfo.GetApproverEmailList($scope.SSLInfoSectionViewModel.PrimaryDomainDetail.CommonName, $scope.SSLInfoSectionViewModel.APIParameterValue, 0).then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                });


            }
        },
        onSuccess: function (params) {
            if (params.Result.AprroverEmailList.length <= 10)
                $scope.PrimaryDomainIgnoreSearchOption = { minimumResultsForSearch: -1 }
            else
                $scope.PrimaryDomainIgnoreSearchOption = {}

            var instance = this.instance;
            $scope.ClearSummaryMsgAndScrollTop();
            $scope.primarydomainapproveremaillist = params.Result.AprroverEmailList
            var $ddlAddressListCountry = $('select#ddlApproverEmail');
            for (i = 0; i < params.Result.AprroverEmailList.length; i++) {
                $ddlAddressListCountry.append($("<option></option>").val
               (params.Result.AprroverEmailList[i]).html(params.Result.AprroverEmailList[i]));
            }
            //if ($scope.primarydomainapproveremail != "")
            //{
            //    $ddlAddressListCountry.val($scope.primarydomainapproveremail)
            //    $ddlAddressListCountry.coreUISelect('update')
            //}
            $scope.wizardstep += 1;

        },
        onLoading: function (params) {
            var instance = this.instance;
            $scope.sslnotification.alerts.clear();
            instance.activeNotification = $scope.sslnotification.stuckNotifications.addLoading('<B>Loading</B> Please wait.', false);
            instance.isDisabled = true;
            instance.showError = false;
        },
        onError: function (params) {
            $scope.sslnotification.alerts.clear();
            $scope.sslnotification.alerts.addError(params.Msg, $scope.sslnotificationAlertArguments)
            $('html, body').animate({ scrollTop: 0 }, 800);
        },
        onActive: function (params) {
        }
    })

    // GETTING APPROVER EMAIL LIST FOR THE ADD ON DOMAINS
    $scope.GetApproverEmailListForAddOns = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.click = function (commonname, index) {
                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                sslRepository.sslInfo.GetApproverEmailList(commonname, $scope.SSLInfoSectionViewModel.APIParameterValue, index).then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result, index);
                });


            }
        },
        onSuccess: function (params, index) {
            if (params.Result.AprroverEmailList.length <= 10)
                $scope.SecondaryDomainIgnoreSearchOption[params.Result.SanIndex] = { minimumResultsForSearch: -1 }
            else
                $scope.SecondaryDomainIgnoreSearchOption[params.Result.SanIndex] = {}

            var instance = this.instance;
            $scope.sslnotification.alerts.clear();
            $scope.addondomainsEmail.push(params.Result.AprroverEmailList)

            var ddlSanName = '#sanDropDown_' + params.Result.SanIndex;
            var $ddlSan = $(ddlSanName)
            $ddlSan.empty()
            $ddlSan.append($("<option selected></option>").val
($scope.SSLInfoRes.static_SelectOption).html($scope.SSLInfoRes.static_SelectOption));
            for (i = 0; i < params.Result.AprroverEmailList.length; i++) {
                $ddlSan.append($("<option></option>").val
               (params.Result.AprroverEmailList[i]).html(params.Result.AprroverEmailList[i]));
            }

            if ($scope.addonDomainApproverEmail[params.Result.SanIndex]!=undefined) {
                $ddlSan.select2("val", $scope.addonDomainApproverEmail[params.Result.SanIndex]);
            }

            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);

        },
        onLoading: function (params) {
            var instance = this.instance;
            $scope.sslnotification.alerts.clear();
            instance.activeNotification = $scope.sslnotification.stuckNotifications.addLoading('<B>Loading</B> Please wait.', false);
            instance.isDisabled = true;
            instance.showError = false;
        },
        onError: function (params) {
            $scope.sslnotification.alerts.clear();
            $scope.sslnotification.alerts.addError(params.Msg, $scope.sslnotificationAlertArguments)
            $('html, body').animate({ scrollTop: 0 }, 800);
        },
        onActive: function (params) {
        }
    })


    /*
    FUNCTION TO GET THE APPROVER EMAILS FOR ADD ON DOMAINS AND BINDING TO THE APPROVER EMAIL DROP DOWN
    */
    $scope.bindApproverEmails = function (domainname, index, dcvmethod, domainType, emailID) {
        if (dcvmethod == 'Email') {
            //If already approver emails binded to dropdown then skip binding again.
            $scope.GetApproverEmailListForAddOns.click(domainname, index);


        }
        $scope.bindDomainsToValidateAndDCVMethod(domainname, dcvmethod, '', domainType, '', index);

    };

    $scope.selecteddcvmethodofaddondomain = [];

    /*
        FUNCTION TO PUSH THE DOMAIN NAME AND APPROPRIATE DCV METHOD TO THE LIST 
         $scope.domainstovalidateviaemail FOR EMAIL TYPE, 
         $scope.domainstovalidateviahttp  FOR HTTP  TYPE
         $scope.domainstovalidateviadns   FOR DNS   TYPE
    */
    $scope.bindDomainsToValidateAndDCVMethod = function (domainName, dcvMethod, emailId, domainType, ChangeActionFrom, index) {
        if (ChangeActionFrom == 'PRIMARYDROPDOWNCHANGE')
        {
            $scope.RemoveDomainNameFromDCVMethods(domainName, true, true, true)
            $scope.primarydomainapproveremail = $scope.SSLInfoRes.static_SelectOption;
            emailId = $scope.primarydomainapproveremail
            $('#primDomainDcvMethod').select2("val", $scope.SSLInfoRes.static_SelectOption);

        }
        if ($scope.dcvUseSameMethodForAllDomains && domainType == "PRIMARY" && ChangeActionFrom == 'PRIMARYDROPDOWNCHANGE') {
            //$scope.dcvUseSameMethodForAllDomains = false;
            if ($scope.dcvUseSameMethodForAllDomains)
                $scope.UseSameMethodForAddonDomains(dcvMethod, $scope.dcvUseSameMethodForAllDomains);
        }

        $scope.AddDCVMethodToList(dcvMethod, domainName, emailId, domainType, index)
    }

    $scope.RemoveDomainNameFromDCVMethods = function (domainName, removeFromEmailList, removeFromHttpList, removeFromDnsList) {
        for (var i = 0; i < $scope.domainstovalidateviaemail.length ; i++) {

            if ($scope.domainstovalidateviaemail[i].NAME == domainName && removeFromEmailList) {
                $scope.domainstovalidateviaemail.splice(i, 1);
            }

        }
        for (var i = 0; i < $scope.domainstovalidateviahttp.length ; i++) {

            if ($scope.domainstovalidateviahttp[i].NAME == domainName && removeFromHttpList) {
                $scope.domainstovalidateviahttp.splice(i, 1);
            }

        }
        for (var i = 0; i < $scope.domainstovalidateviadns.length ; i++) {

            if ($scope.domainstovalidateviadns[i].NAME == domainName && removeFromDnsList) {
                $scope.domainstovalidateviadns.splice(i, 1);
            }

        }
    }

    //FUNCTION TO MAKE THE ADD ON DOMAINS DCV METHOD SAME AS PRIMARY DOMAIN METHOD IF THE CHECKBOX "Use same method for all domains" IS CHECKED
    $scope.UseSameMethodForAddonDomains = function (selectedDCVMethod, blValue) {
        $scope.addonDomainApproverEmail = [];
        for (var i = 0; i < $scope.addonDomains.length; i++) {
            $scope.addonDomains[i].ValidationValue = "";
            $scope.selecteddcvmethodofaddondomain[i] = "";
            $scope.addonDcvMethodDisabled = false;
            $scope.RemoveDomainNameFromDCVMethods($scope.addonDomains[i].CommonName, true, true, true)
            $scope.addonDomainApproverEmail[i] = $scope.SSLInfoRes.static_SelectOption;
            var ddlSanName = '#sanDropDown_' + i;
            var $ddlSan = $(ddlSanName)
            // $ddlSan.val($scope.SSLInfoRes.static_SelectOption).trigger('change');
            $ddlSan.select2("val", $scope.SSLInfoRes.static_SelectOption);
            //$ddlSan.val($scope.SSLInfoRes.static_SelectOption)
            //$ddlSan.select2({})

        }
        if (selectedDCVMethod != "") {
            if (blValue) {
                //  $scope.selecteddcvmethodofaddondomain[0] = selectedDCVMethod;
                for (var i = 0; i < $scope.addonDomains.length; i++) {
                    $scope.selecteddcvmethodofaddondomain[i] = selectedDCVMethod
                    $scope.addonDcvMethodDisabled = true;
                    if (selectedDCVMethod.toUpperCase() == 'EMAIL' && $scope.addonDomains[i].CommonName != "") {
                        $scope.GetApproverEmailListForAddOns.click($scope.addonDomains[i].CommonName, i);
                    }

                    $scope.AddDCVMethodToList(selectedDCVMethod, $scope.addonDomains[i].CommonName, $scope.addonDomains[i].ValidationValue, 'SECONDARY', i)
                }
            }

        }



    }

    /* FUNCTION GetDcvMethodName RETURN DCV METHOD NAME BASED ON THE CODE PASSED. SINCE WHEN REFERRING THE BELOW ENUMERATOR IN ANGULARJS IT RETURN THE CODE LIKE 0 --> EMAIL , 1--> FILE, 2--> DNS
    public enum SSLDCValidationType
    {
        Email = 0,
        File,
        Dns
    }
    */
    $scope.GetDcvMethodName = function (methodCode) {
        var methodName = "";
        switch (methodCode) {
            case 0: methodName = "Email";
                break;
            case 1: methodName = "File";
                break;
            case 2: methodName = "Dns";
                break;
        }
        return methodName;
    }


    $scope.GetValidationType = function (validationCode) {
        var validationType = "";
        switch (validationCode) {
            case 0: validationType = "Domain";
                break;
            case 1: validationType = "Organization";
                break;
            case 2: validationType = "Extended";
                break;
        }
        return validationType;
    }

    $scope.ClearSummaryMsgAndScrollTop = function () {
        $scope.sslnotification.alerts.clear();
        $('html, body').animate({ scrollTop: 0 }, 800);

    }
    $scope.ClearValuesOnStepBackward = function (step) {
        $scope.sslnotification.alerts.clear();
        if ($scope.SSLInfoSectionViewModel.IsDCVStepRequired && step < 3) {
            $scope.domainstovalidateviaemail = [];
            $scope.domainstovalidateviahttp = [];
            $scope.domainstovalidateviadns = [];
            $scope.dcvUseSameMethodForAllDomains = false;
            $scope.selecteddcvmethod = '';
            for (index = 0; index < $scope.selecteddcvmethodofaddondomain.length; index++) {
                $scope.selecteddcvmethodofaddondomain[index] = '';
                $scope.addonDcvMethodDisabled = false;
            }
        }


    }
    $scope.AddDCVMethodToList = function (validationType, commonName, validationValue, domainType, sanOrder,reqFrom) {

        var resultsetItem = [];
        resultsetItem.NAME = commonName;
        resultsetItem.DCV = validationType;
        if (sanOrder != undefined && validationType.toUpperCase() == "EMAIL" && validationValue != undefined && reqFrom!='PAGELOAD')
            resultsetItem.EMAILADDRESS = validationValue[sanOrder];
        else
            resultsetItem.EMAILADDRESS = validationValue
        resultsetItem.DOMAINTYPE = domainType;
        resultsetItem.SanOrder = sanOrder;
        $scope.RemoveDomainNameFromDCVMethods(commonName, true, true, true);
        if (validationType.toUpperCase() == 'EMAIL') {

            for (index = 0; index < $scope.domainstovalidateviaemail.length; index++) {
                if ($scope.domainstovalidateviaemail[index].NAME == commonName) {
                    $scope.domainstovalidateviaemail[index].DCV = validationType;
                    if (sanOrder != undefined && reqFrom != 'PAGELOAD')
                        $scope.domainstovalidateviaemail[index].EMAILADDRESS = validationValue[sanOrder];
                    else
                        $scope.domainstovalidateviaemail[index].EMAILADDRESS = validationValue;

                    $scope.domainstovalidateviaemail[index].DOMAINTYPE = domainType;
                    break;
                }
                else {

                    $scope.domainstovalidateviaemail.push(resultsetItem)
                    break;
                }
            }
            if ($scope.domainstovalidateviaemail.length == 0) {
                $scope.domainstovalidateviaemail.push(resultsetItem)
            }
        }
        else if (validationType.toUpperCase() == 'FILE') {
            resultsetItem.EMAILADDRESS = $scope.SSLInfoRes.static_File_Based_EditDCV;
            $scope.domainstovalidateviahttp.push(resultsetItem)
        }
        else if (validationType.toUpperCase() == 'DNS') {
            resultsetItem.EMAILADDRESS = $scope.SSLInfoRes.static_DNS_Based_EditDCV;
            $scope.domainstovalidateviadns.push(resultsetItem)
        }
    }

    // BUTTON NEXT CLICK EVENT
    $scope.ClickDone = function () {

        var validationResult = $scope.ValidateDCVStep();

        if (validationResult[0] == false) {
            $scope.sslnotification.alerts.clear();
            var errMsg = validationResult[1];
            $('html, body').animate({ scrollTop: 0 }, 800);
            $scope.sslnotification.alerts.addError(errMsg, $scope.sslnotificationAlertArguments)
        }
        else {
            sslRepository.sslInfo.ValidateDCVStep(validationResult[1]).then(function (result) {
                var res = result;
                if (result.Error) {
                    $('html, body').animate({ scrollTop: 0 }, 800);
                    $scope.sslnotification.alerts.addError(result.Msg, $scope.sslnotificationAlertArguments)

                }
                else {
                    $scope.AysnchronousChangeDCVMethod.Click($scope.SSLInfoSectionViewModel);
                }
            });


        }





    }


    $scope.AysnchronousChangeDCVMethod = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.Click = function (model) {
                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                sslRepository.sslInfo.ChangeDCVMethod(model).then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                });


            }
        },
        onSuccess: function (params) {
            sslRepository.sslInfo.RedirectProductPageJSON($scope.SSLInfoSectionViewModel.CertificateId, params.Msg).then(function (result) {
                if (!result.Error) {
                    var redirectURL = result.Msg;
                    window.location = redirectURL;
                    // $.get(redirectURL, { }, function () { });
                }

            });
        },
        onLoading: function (params) {
            var instance = this.instance;
            $scope.sslnotification.alerts.clear();
            instance.activeNotification = $scope.sslnotification.stuckNotifications.addLoading('<B>Submitting Confirmation</B> Please wait.', false);
            instance.isDisabled = true;
            instance.showError = false;
        },
        onError: function (params) {
            sslRepository.sslInfo.ChangeDCVMethodError($scope.SSLInfoSectionViewModel.CertificateId, params.Msg).then(function (resultError) {
                if (!resultError.Error) {
                    var redirectEditDcvURL = resultError.Msg;
                    window.location = redirectEditDcvURL;
                }
                else {
                    $scope.sslnotification.alerts.clear();
                    $scope.sslnotification.alerts.addError(resultError.Msg, $scope.sslnotificationAlertArguments)
                    $('html, body').animate({ scrollTop: 0 }, 800);
                    return false;
                }
            });
        },

    })

    $scope.ValidateDCVStep = function () {
        var errorModel = $scope.SSLInfoSectionViewModel;
        var returnResult = false;
        var approveEmailNotSelected = false;
        var dcvMethodNotSelected = false;
        var emailDCVLength = $scope.domainstovalidateviaemail.length;
        var dnsDCVLength = $scope.domainstovalidateviadns.length;
        var httpDCVLength = $scope.domainstovalidateviahttp.length;
        // check addon domain count + 1 for domain count with the list of domain names added to email, dns , http method
        for (var i = 0; i < $scope.domainstovalidateviaemail.length; i++) {
            if ($scope.domainstovalidateviaemail[i].EMAILADDRESS == undefined || $scope.domainstovalidateviaemail[i].EMAILADDRESS == "" || $scope.domainstovalidateviaemail[i].EMAILADDRESS == NaN || $scope.domainstovalidateviaemail[i].EMAILADDRESS == $scope.SSLInfoRes.static_SelectOption) {
                errorModel = $scope.SSLInfoValidation.error_Contextual_ApproverEmailRequired.replace("{COMMONNAME}", $scope.domainstovalidateviaemail[i].NAME);
                approveEmailNotSelected = true;
                break;
            }
        }
        //$scope.addonDomainCount + 1 for sans and +1 for primary domain
        if ($scope.SSLInfoSectionViewModel.ProviderName == 'COMODO') {
            if ($scope.addonDomainCount + 1 != (emailDCVLength + dnsDCVLength + httpDCVLength)) {
                errorModel = $scope.SSLInfoValidation.error_Contextual_DCVMethodRequired;
                dcvMethodNotSelected = true;

            }
        }
        else {
            if ((emailDCVLength + dnsDCVLength + httpDCVLength) == 0) {
                errorModel = $scope.SSLInfoValidation.error_Contextual_PrimaryDomainDCVMethodRequired;
                dcvMethodNotSelected = true;
            }
        }
        if (dcvMethodNotSelected || approveEmailNotSelected) {
            returnResult = false;
        }
        else {
            if ($scope.SSLInfoSectionViewModel.IsDCVStepRequired) {
                var PrimaryDomainDetail = {};
                PrimaryDomainDetail.CommonName = "";
                PrimaryDomainDetail.DomainName = "";
                PrimaryDomainDetail.ValidationType = "";
                PrimaryDomainDetail.ValidationValue = "";
                PrimaryDomainDetail.IsHttpDCVUsed = false;
                PrimaryDomainDetail.IsDNSDCVUsed = false;

                var SanDomDetails = [];

                for (i = 0; i < $scope.domainstovalidateviaemail.length; i++) {

                    if ($scope.domainstovalidateviaemail[i].DOMAINTYPE == 'PRIMARY') {
                        PrimaryDomainDetail.CommonName = $scope.domainstovalidateviaemail[i].NAME;
                        PrimaryDomainDetail.DomainName = $scope.domainstovalidateviaemail[i].NAME;
                        PrimaryDomainDetail.ValidationType = $scope.domainstovalidateviaemail[i].DCV;
                        PrimaryDomainDetail.ValidationValue = $scope.domainstovalidateviaemail[i].EMAILADDRESS;
                        PrimaryDomainDetail.IsHttpDCVUsed = false;
                        PrimaryDomainDetail.IsDNSDCVUsed = false;

                    }
                    else {
                        var SanDomainDetails = {};
                        SanDomainDetails.CommonName = $scope.domainstovalidateviaemail[i].NAME;
                        SanDomainDetails.DomainName = $scope.domainstovalidateviaemail[i].NAME;
                        SanDomainDetails.ValidationType = $scope.domainstovalidateviaemail[i].DCV;
                        SanDomainDetails.ValidationValue = $scope.domainstovalidateviaemail[i].EMAILADDRESS;
                        SanDomainDetails.SanOrder = $scope.domainstovalidateviaemail[i].SanOrder;
                        SanDomDetails.push(SanDomainDetails)

                    }
                }
                for (i = 0; i < $scope.domainstovalidateviahttp.length; i++) {
                    if ($scope.domainstovalidateviahttp[i].DOMAINTYPE == 'PRIMARY') {
                        PrimaryDomainDetail.CommonName = $scope.domainstovalidateviahttp[i].NAME;
                        PrimaryDomainDetail.DomainName = $scope.domainstovalidateviahttp[i].NAME;
                        PrimaryDomainDetail.ValidationType = $scope.domainstovalidateviahttp[i].DCV;
                        PrimaryDomainDetail.ValidationValue = $scope.domainstovalidateviahttp[i].EMAILADDRESS;
                        PrimaryDomainDetail.IsHttpDCVUsed = true;
                        PrimaryDomainDetail.IsDNSDCVUsed = false;
                    }
                    else {
                        var SanDomainDetails = {};
                        SanDomainDetails.CommonName = $scope.domainstovalidateviahttp[i].NAME;
                        SanDomainDetails.DomainName = $scope.domainstovalidateviahttp[i].NAME;
                        SanDomainDetails.ValidationType = $scope.domainstovalidateviahttp[i].DCV;
                        SanDomainDetails.ValidationValue = $scope.domainstovalidateviahttp[i].EMAILADDRESS;
                        SanDomainDetails.SanOrder = $scope.domainstovalidateviahttp[i].SanOrder;
                        SanDomDetails.push(SanDomainDetails)

                    }
                }

                for (i = 0; i < $scope.domainstovalidateviadns.length; i++) {
                    if ($scope.domainstovalidateviadns[i].DOMAINTYPE == 'PRIMARY') {
                        PrimaryDomainDetail.CommonName = $scope.domainstovalidateviadns[i].NAME;
                        PrimaryDomainDetail.DomainName = $scope.domainstovalidateviadns[i].NAME;
                        PrimaryDomainDetail.ValidationType = $scope.domainstovalidateviadns[i].DCV;
                        PrimaryDomainDetail.ValidationValue = $scope.domainstovalidateviadns[i].EMAILADDRESS;;
                        PrimaryDomainDetail.IsHttpDCVUsed = false;
                        PrimaryDomainDetail.IsDNSDCVUsed = true;
                    }
                    else {
                        var SanDomainDetails = {};
                        SanDomainDetails.CommonName = $scope.domainstovalidateviadns[i].NAME;
                        SanDomainDetails.DomainName = $scope.domainstovalidateviadns[i].NAME;
                        SanDomainDetails.ValidationType = $scope.domainstovalidateviadns[i].DCV;
                        SanDomainDetails.ValidationValue = $scope.domainstovalidateviadns[i].EMAILADDRESS;
                        SanDomainDetails.SanOrder = $scope.domainstovalidateviadns[i].SanOrder;
                        SanDomDetails.push(SanDomainDetails)

                    }
                }

                if ($scope.domainstovalidateviahttp.length > 0 && $scope.domainstovalidateviaemail.length == 0 && $scope.domainstovalidateviadns.length == 0)
                {

                    $scope.SSLInfoSectionViewModel.IsHttpDCVUsed = true;
                    $scope.SSLInfoSectionViewModel.IsDNSDCVUsed = false;

                }
                else if ($scope.domainstovalidateviadns.length > 0 && $scope.domainstovalidateviahttp.length == 0 && $scope.domainstovalidateviaemail.length == 0) {
                    $scope.SSLInfoSectionViewModel.IsDNSDCVUsed = true;
                    $scope.SSLInfoSectionViewModel.IsHttpDCVUsed = false;
                }
                var sortedSanDetails = $filter('orderBy')(SanDomDetails, "SanOrder");

                $scope.SSLInfoSectionViewModel.PrimaryDomainDetail = PrimaryDomainDetail;
                $scope.SSLInfoSectionViewModel.SanDomainsDetail = sortedSanDetails;
                errorModel = $scope.SSLInfoSectionViewModel;
                returnResult = true;
            }

        }
        return [returnResult, errorModel];
    }

    $scope.EditDcvCancel = function () {
        sslRepository.sslInfo.RedirectProductPageJSON($scope.SSLInfoSectionViewModel.CertificateId).then(function (result) {
            if (!result.Error) {
                var redirectURL = result.Msg;
                window.location = redirectURL;
            }
            else {
                $scope.sslnotification.alerts.clear();
                $scope.sslnotification.alerts.addError(result.Msg, $scope.sslnotificationAlertArguments)
                $('html, body').animate({ scrollTop: 0 }, 800);
                return false;
            }
        });


    }
}]);;
app.controller('sslWizardStepCtrl', ['$scope', '$rootScope', 'sslRepository', '$cookies', '$cookieStore', '$filter', '$modal', '$location', 'notificationService', 'pageHelper', '$timeout', '$attrs','popupWindow',
function ($scope, $rootScope, sslRepository, $cookies, $cookieStore, $filter, $modal, $location, notificationService, pageHelper, $timeout, $attrs, popupWindow) {

    $scope.showLoadPanel = true;
    $scope.domainName = '';
    $scope.isConfirmClicked = false;
    //INITIALIZATION FUNCTION. NOTE: THIS WILL BE CALLED ONLY ALL THE SCOPE VARIABLES INITIATED
    $scope.SSLInfoRes = SSLInfoRes;
    $scope.IsMinimumSanSatisfied = false;
    $scope.sslnotificationAlertArguments = { isAutoHide: false, hasClose: true }
    $scope.sslnotificationAlertArgumentsforSanEdit = { isAutoHide: true, hasClose: true }

    var countryCodeForContacts = '';
    // SELECT 2 TYPE OF DROPDOWN LIST MAKING IT AS NORMAL DROPDOWN BY AVOIDING THE SEARCH OPTION IN IT
    $scope.NoSearchOption = { minimumResultsForSearch: -1 };
    $scope.PrimaryDomainIgnoreSearchOption = {};
    $scope.SecondaryDomainIgnoreSearchOption = [];
    $scope.wizardstep = 1;
    $scope.ErrorOccuredInReissue = false;
    $('#CSRCode').focus();
    $scope.ButtonName = $scope.SSLInfoRes.static_ButtonSubmit;// "Submit";
    $scope.showPopupWindow = ShowPopupWindow;
    $scope.symantecSunsetDate = SymantecSunsetDate;
    $scope.siteServerNameUrl = SiteServerNameUrl;

     
   this.initialize = function (model) {
        $scope.showLoadPanel = false;
        if (model.IsValid) {
            
            $scope.SSLInfoSectionViewModel = model;            
            
            if ($scope.showPopupWindow == "True") {
                if ($scope.SSLInfoSectionViewModel.ProviderName.toLowerCase() != 'comodo' && $scope.SSLInfoSectionViewModel.Status.toLowerCase() != 'active') {
                    $scope.symatecCertificateDetails = {
                        certificateId: $scope.SSLInfoSectionViewModel.CertificateId,
                        certificateType: $scope.SSLInfoSectionViewModel.CertificateType,
                        validYears: $scope.SSLInfoSectionViewModel.Years,
                        sanCount: $scope.SSLInfoSectionViewModel.SanCount
                    }
                    popupWindow.openPopupWindow($scope.symatecCertificateDetails, 'activate', $scope.symantecSunsetDate, $scope.siteServerNameUrl);
                }
            }

            // This code will be removed after some days            
            //--Begin--
            // Description: The EV SSL SGC certificate will be no loner in use. We are providing alternate certificate for that as long as the ev ssl sgc certificate comepltelt removed from all areas.            
            if ($scope.SSLInfoSectionViewModel.SSlType.toUpperCase() == 'EV SSL SGC' && $scope.SSLInfoSectionViewModel.ProviderName == 'COMODO' && ($scope.SSLInfoSectionViewModel.Status == 'NEWPURCHASE' || $scope.SSLInfoSectionViewModel.Status == 'NEWRENEWAL')) {
                modalConfirm('Activate Comodo EV SSL Certificate', '<B>When you activate, Comodo will replace your EV SGC SSL with EV SSL</B><BR>'+
                    'Comodo has discontinued the EV SGC SSL because it has become obsolete.  EV SSL will preserve all functionalities. <a target="_blank"  href="https://www.namecheap.com/support/knowledgebase/article.aspx/9790/38/sgc-certificates-sunset">Learn More </a><br><br>'+
                    'Do you wish to continue?', modalResult);                
            }
            //--End--

            for (var i = 0; i < $scope.SSLInfoSectionViewModel.SanCount; i++) {
                var addonListItems = [];
                var oldListItem = [];
                if ($scope.SSLInfoSectionViewModel.SanDomainsDetail != null && i < $scope.SSLInfoSectionViewModel.SanDomainsDetail.length && $scope.SSLInfoSectionViewModel.Status == 'ACTIVE') {
                    addonListItems.CommonName = $scope.SSLInfoSectionViewModel.SanDomainsDetail[i].CommonName;
                    addonListItems.DomainName = $scope.SSLInfoSectionViewModel.SanDomainsDetail[i].DomainName;
                    addonListItems.ValidationType = $scope.GetDcvMethodName($scope.SSLInfoSectionViewModel.SanDomainsDetail[i].ValidationType);
                    addonListItems.ValidationValue = $scope.SSLInfoSectionViewModel.SanDomainsDetail[i].ValidationValue;

                    oldListItem.OldCommonName = $scope.SSLInfoSectionViewModel.SanDomainsDetail[i].CommonName;
                    oldListItem.OldDomainName = $scope.SSLInfoSectionViewModel.SanDomainsDetail[i].DomainName;
                    oldListItem.OldValidationType = $scope.GetDcvMethodName($scope.SSLInfoSectionViewModel.SanDomainsDetail[i].ValidationType);
                    oldListItem.OldValidationValue = $scope.SSLInfoSectionViewModel.SanDomainsDetail[i].ValidationValue;

                    if ($scope.SSLInfoSectionViewModel.ProviderName == 'COMODO') {
                        addonListItems.disabled = false;
                        $scope.AddDCVMethodToList(addonListItems.ValidationType, addonListItems.CommonName, addonListItems.ValidationValue, "SECONDARY", i, 'PAGELOAD')
                    }
                    else
                        addonListItems.disabled = true;
                }
                else {
                    addonListItems.CommonName = "";
                    addonListItems.DomainName = "";
                    addonListItems.ValidationType = "";
                    addonListItems.ValidationValue = "";
                    addonListItems.disabled = false;

                    oldListItem.OldCommonName = "";
                    oldListItem.OldDomainName = "";
                    oldListItem.OldValidationType = "";
                    oldListItem.OldValidationValue = "";

                }
                //if ($scope.SSLInfoSectionViewModel.PrimaryDomainDetail.CommonName != addonListItems.CommonName) {
                    $scope.oldAddonDomains.push(oldListItem);
                    $scope.addonDomains.push(addonListItems);
               // }
            }

            if ($scope.SSLInfoSectionViewModel.Status == 'ACTIVE') {
                if ($scope.SSLInfoSectionViewModel.PrimaryDomainDetail == null) {
                    $scope.SSLInfoSectionViewModel.PrimaryDomainDetail = [];
                    var primaryDomainDetails = [];
                    primaryDomainDetails.CommonName = "";
                    primaryDomainDetails.DomainName = "";
                    primaryDomainDetails.ValidationType = "";
                    primaryDomainDetails.ValidationValue = "";
                    primaryDomainDetails.disabled = false;
                    $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.push(primaryDomainDetails)
                }
                else {

                    if ($scope.SSLInfoSectionViewModel.ProviderName.toUpperCase() == 'COMODO') {
                        $scope.selecteddcvmethod = $scope.GetDcvMethodName($scope.SSLInfoSectionViewModel.PrimaryDomainDetail.ValidationType);
                    }
                    else {
                        // $scope.selecteddcvmethod = 'Email';
                        if ($scope.GetDcvMethodName($scope.SSLInfoSectionViewModel.PrimaryDomainDetail.ValidationType)=='Dns')
                        {
                            $scope.selecteddcvmethod = 'Email';
                        }
                        else
                        {
                            $scope.selecteddcvmethod = $scope.GetDcvMethodName($scope.SSLInfoSectionViewModel.PrimaryDomainDetail.ValidationType);

                        }
                    }
                    //$scope.selecteddcvmethod = $scope.GetDcvMethodName($scope.SSLInfoSectionViewModel.PrimaryDomainDetail.ValidationType);
                    $scope.primarydomainapproveremail = $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.ValidationValue;
                    $scope.AddDCVMethodToList($scope.selecteddcvmethod, $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.CommonName, $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.ValidationValue, "PRIMARY")

                    $scope.oldPrimaryDomain.CommonName = $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.CommonName;
                    $scope.oldPrimaryDomain.DomainName = $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.DomainName;
                    $scope.oldPrimaryDomain.ValidationType = $scope.selecteddcvmethod;
                    $scope.oldPrimaryDomain.ValidationValue = $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.ValidationValue;

                }

                if ($scope.SSLInfoSectionViewModel.SanDomainsDetail != null) {
                    $scope.selecteddcvmethodofaddondomain = [];
                    $scope.addonDomainApproverEmail = [];
                    for (index = 0; index < $scope.SSLInfoSectionViewModel.SanDomainsDetail.length; index++) {
                        if ($scope.SSLInfoSectionViewModel.PrimaryDomainDetail.CommonName == $scope.SSLInfoSectionViewModel.SanDomainsDetail[index].CommonName) {
                            $scope.SSLInfoSectionViewModel.SanDomainsDetail.splice(index, 1)
                            index -= 1;
                        }
                        else
                        {
                            $scope.selecteddcvmethodofaddondomain[index] = $scope.GetDcvMethodName($scope.SSLInfoSectionViewModel.SanDomainsDetail[index].ValidationType)
                            if ($scope.GetDcvMethodName($scope.SSLInfoSectionViewModel.SanDomainsDetail[index].ValidationType).toUpperCase() == "EMAIL")
                                $scope.addonDomainApproverEmail[index] = $scope.SSLInfoSectionViewModel.SanDomainsDetail[index].ValidationValue;
                            else
                                $scope.addonDomainApproverEmail[index] = $scope.SSLInfoRes.static_SelectOption;
                        }


                       

                    }
                }

            }


            $scope.SSLInfoSectionViewModel = model;
            var $ddlAddressListCountry = $('select#addressListCountry');
            var ddlCountryOfIncorporation = $('select#addressListCountryOfIncorporation');
            var ddlCallBackContactsCountry = $('select#callBackContactsCountry');
            var ddlAdminContactsCountry = $('select#AdminContactsCountry');
            var ddlTechContactsCountry = $('select#TechContactsCountry');


            var ddlCompanyContactPhoneCode = $('form[name="frmCompanyContacts"] select#PhoneCode');
            var ddlCompanyContactFaxCode = $('form[name="frmCompanyContacts"] select#FaxCode');

            var ddlAdminPhoneCode = $('form[name="frmAdminContacts"] select#PhoneCode');
            var ddlAdminFaxCode = $('form[name="frmAdminContacts"] select#FaxCode');

            var ddlTechPhoneCode = $('form[name="frmTechContacts"] select#PhoneCode');
            var ddlTechFaxCode = $('form[name="frmTechContacts"] select#FaxCode');

            var ddlCallBackPhoneCode = $('form[name="frmCallBackContact"] select#CallBackPhoneCode');
            var ddlCallBackFaxCode = $('form[name="frmCallBackContact"] select#CallBackFaxCode');

            if (model.Status == 'NEWPURCHASE' || model.Status == 'INPROGRESS' || model.Status == 'NEWRENEWAL') {
                countryCodeForContacts = model.CompanyContactDetails.Country;
                $scope.AddressList.Country = model.CompanyContactDetails.Country;
                $scope.CallBackContacts.Country = model.CallbackContactDetails.Country;
                $scope.AdminContacts.Country = model.AdminContactDetails.Country;
                $scope.TechContacts.Country = model.TechContactDetails.Country;
                $scope.AddressList.CountryofIncorporation = model.CompanyContactDetails.Country;

                if ($ddlAddressListCountry != undefined)
                    $ddlAddressListCountry.select2("val", $scope.AddressList.Country)
                if (ddlCallBackContactsCountry != undefined)
                    ddlCallBackContactsCountry.select2("val", $scope.CallBackContacts.Country)
                if (ddlAdminContactsCountry != undefined)
                    ddlAdminContactsCountry.select("val", $scope.AdminContacts.Country)
                if (ddlTechContactsCountry != undefined)
                    ddlTechContactsCountry.select2("val", $scope.TechContacts.Country);

                if (ddlCountryOfIncorporation != undefined)
                    ddlCountryOfIncorporation.select2("val", $scope.AddressList.CountryofIncorporation)

                if (ddlCompanyContactPhoneCode != undefined) {
                    ddlCompanyContactPhoneCode.select2("val", model.CompanyContactDetails.PhonePrefix)
                    $scope.AddressList.PhoneCode = model.CompanyContactDetails.PhonePrefix
                }

                if (ddlAdminPhoneCode != undefined) {
                    ddlAdminPhoneCode.select2("val", model.AdminContactDetails.PhoneCode)
                    $scope.AdminContacts.PhoneCode = model.AdminContactDetails.PhoneCode
                }

                if (ddlTechPhoneCode != undefined) {
                    ddlTechPhoneCode.select2("val", model.TechContactDetails.PhoneCode)
                    $scope.TechContacts.PhoneCode = model.TechContactDetails.PhoneCode;
                }

                if (ddlCallBackPhoneCode != undefined) {
                    ddlCallBackPhoneCode.select2("val", model.CallbackContactDetails.PhoneCode)
                    $scope.CallBackContacts.PhoneCode = model.CallbackContactDetails.PhoneCode;
                }


            }
            else if (model.Status == 'ACTIVE') {
                $scope.AdminContacts.EmailAddress = model.AdminEmail;
                if (model.CompanyContactDetails != null) {
                    // FILL COMPANY CONTACTS ON REISSUE
                    if (model.CompanyContactDetails.CompanyName != null && model.CompanyContactDetails.CompanyName != '' && model.CompanyContactDetails.CompanyName != NaN && model.CompanyContactDetails.CompanyName != undefined)
                        $scope.AddressList.CompanyName = model.CompanyContactDetails.CompanyName;
                    if (model.CompanyContactDetails.AssumedName != null && model.CompanyContactDetails.AssumedName != '' && model.CompanyContactDetails.AssumedName != NaN && model.CompanyContactDetails.AssumedName != undefined) {
                        $scope.AddressList.AssumedName = model.CompanyContactDetails.AssumedName;
                        $scope.AddressList.AssumedNameRequired = true;
                    }
                    if (model.CompanyContactDetails.Department != '' && model.CompanyContactDetails.Department != NaN && model.CompanyContactDetails.Department != undefined) {
                        $scope.AddressList.Department = model.CompanyContactDetails.Department;
                        $scope.AddressList.DepartMentRequired = true;
                    }


                    if (model.CompanyContactDetails.CompanyNumber != '' && model.CompanyContactDetails.CompanyNumber != NaN && model.CompanyContactDetails.CompanyNumber != undefined) {
                        $scope.AddressList.CompanyNumber = model.CompanyContactDetails.CompanyNumber;
                        $scope.AddressList.CompanyNumberRequired = true;
                    }


                    if (model.CompanyContactDetails.DunsNumber != '' && model.CompanyContactDetails.DunsNumber != NaN && model.CompanyContactDetails.DunsNumber != undefined) {
                        $scope.AddressList.DunsNumber = parseInt(model.CompanyContactDetails.DunsNumber);
                        $scope.AddressList.DunsNumberRequired = true;
                    }

                    if (model.CompanyContactDetails.IncorporatingAgency != '' && model.CompanyContactDetails.IncorporatingAgency != NaN && model.CompanyContactDetails.IncorporatingAgency != undefined) {
                        $scope.AddressList.IncorporatingAgency = model.CompanyContactDetails.IncorporatingAgency;
                    }
                    if (model.CompanyContactDetails.CityOfIncorporation != '' && model.CompanyContactDetails.CityOfIncorporation != NaN && model.CompanyContactDetails.CityOfIncorporation != undefined) {
                        $scope.AddressList.CityOfIncorporation = model.CompanyContactDetails.CityOfIncorporation;
                        $scope.AddressList.CityOfIncorporationRequired = true;
                    }
                    if (model.CompanyContactDetails.StateProvinceOfIncorporation != '' && model.CompanyContactDetails.StateProvinceOfIncorporation != NaN && model.CompanyContactDetails.StateProvinceOfIncorporation != undefined) {
                        $scope.AddressList.StateprovinceofIncorporation = model.CompanyContactDetails.StateProvinceOfIncorporation;
                        $scope.AddressList.StateofIncorporationRequired = true;
                    }



                    if (model.CompanyContactDetails.CountryOfIncorporation != '' && model.CompanyContactDetails.CountryOfIncorporation != NaN && model.CompanyContactDetails.CountryOfIncorporation != undefined) {
                        $scope.AddressList.CountryofIncorporation = model.CompanyContactDetails.CountryOfIncorporation;
                        ddlCountryOfIncorporation.select2("val", model.CompanyContactDetails.CountryOfIncorporation)

                        $scope.AddressList.CountryofIncorporationRequired = true;
                    }

                    if (model.CompanyContactDetails.Address1 != '' && model.CompanyContactDetails.Address1 != NaN && model.CompanyContactDetails.Address1 != undefined) {
                        $scope.AddressList.Address = model.CompanyContactDetails.Address1;
                    }

                    if (model.CompanyContactDetails.Address2 != '' && model.CompanyContactDetails.Address2 != NaN && model.CompanyContactDetails.Address2 != undefined) {
                        $scope.AddressList.Address1 = model.CompanyContactDetails.Address2;
                        $scope.AddressList.Address1Required = true;
                    }



                    if (model.CompanyContactDetails.POBox != '' && model.CompanyContactDetails.POBox != NaN && model.CompanyContactDetails.POBox != undefined) {
                        $scope.AddressList.POBox = model.CompanyContactDetails.POBox;
                        $scope.AddressList.POBoxRequired = true;
                    }

                    if (model.CompanyContactDetails.City != '' && model.CompanyContactDetails.City != NaN && model.CompanyContactDetails.City != undefined)
                        $scope.AddressList.City = model.CompanyContactDetails.City;
                    if (model.CompanyContactDetails.StateProvince != '' && model.CompanyContactDetails.StateProvince != NaN && model.CompanyContactDetails.StateProvince != undefined)
                        $scope.AddressList.StateProvince = model.CompanyContactDetails.StateProvince;
                    if (model.CompanyContactDetails.PostalCode != '' && model.CompanyContactDetails.PostalCode != NaN && model.CompanyContactDetails.PostalCode != undefined)
                        $scope.AddressList.ZIPPostalCode = model.CompanyContactDetails.PostalCode;
                    if (model.CompanyContactDetails.Country != null && model.CompanyContactDetails.Country != undefined && model.CompanyContactDetails.Country != "") {
                        $scope.AddressList.Country = model.CompanyContactDetails.Country;
                    }

                    $ddlAddressListCountry.select2("val", $scope.AddressList.Country);

                    if (model.CompanyContactDetails.AdminEmail != '' && model.CompanyContactDetails.AdminEmail != NaN && model.CompanyContactDetails.AdminEmail != undefined)
                        $scope.AddressList.EmailAddress = model.CompanyContactDetails.AdminEmail;
                    if (model.CompanyContactDetails.BusinessCategory != '' && model.CompanyContactDetails.BusinessCategory != NaN && model.CompanyContactDetails.BusinessCategory != undefined)
                        $scope.AddressList.BusinessCategory = model.CompanyContactDetails.BusinessCategory;


                    if (model.CompanyContactDetails.DateOfIncorporation != '' && model.CompanyContactDetails.DateOfIncorporation != NaN && model.CompanyContactDetails.DateOfIncorporation != undefined) {
                        $scope.AddressList.DateofIncorporation = model.CompanyContactDetails.DateOfIncorporation;
                        $scope.AddressList.DateofIncorporationRequired = true;
                    }

                    if (model.CompanyContactDetails.PhoneNumber != null && model.CompanyContactDetails.PhoneNumber != undefined && model.CompanyContactDetails.PhoneNumber != "") {
                        $scope.AddressList.PhoneNumber = model.CompanyContactDetails.PhoneNumber.split('.')[1];
                        $scope.AddressList.PhoneCode = model.CompanyContactDetails.PhoneNumber.split('.')[0].replace(/\+/g, "");
                        ddlCompanyContactPhoneCode.select2("val", $scope.AddressList.PhoneCode)
                        if ($scope.AddressList.PhoneNumber.indexOf("x") != -1) {
                            $scope.AddressList.PhoneNumberExt = $scope.AddressList.PhoneNumber.split('x')[1].replace(/\x/g, "");
                            $scope.AddressList.PhoneNumber = $scope.AddressList.PhoneNumber.split('x')[0];
                        }
                    }
                    else {
                        $scope.AddressList.PhoneNumber = "";
                        $scope.AddressList.PhoneCode = "";
                    }
                    if (model.CompanyContactDetails.PhoneNumberExt != null && model.CompanyContactDetails.PhoneNumberExt != "")
                        $scope.AddressList.PhoneNumberExt = model.CompanyContactDetails.PhoneNumberExt;
                    if ($scope.AddressList.PhoneNumberExt != null && $scope.AddressList.PhoneNumberExt != "")
                        $scope.AddressList.PhoneExtCheckBox = true;

                    if (model.CompanyContactDetails.FaxNumber != null && model.CompanyContactDetails.FaxNumber != undefined && model.CompanyContactDetails.FaxNumber != "") {
                        $scope.AddressList.FaxNumber = model.CompanyContactDetails.FaxNumber.split('.')[1];
                        $scope.AddressList.FaxCode = model.CompanyContactDetails.FaxNumber.split('.')[0].replace(/\+/g, "")
                        ddlCompanyContactFaxCode.select2("val", $scope.AddressList.FaxCode);

                    }
                    else {
                        $scope.AddressList.FaxNumber = "";
                        $scope.AddressList.FaxCode = "";
                    }

                }

                //FILL CALL BACK CONTACTS ON REISSUE
                if (model.CallbackContactDetails != null) {


                    $scope.CallBackContacts.FirstName = model.CallbackContactDetails.FirstName;
                    $scope.CallBackContacts.LastName = model.CallbackContactDetails.LastName;

                    $scope.CallBackContacts.JobTitle = model.CallbackContactDetails.JobTitle;
                    if ($scope.CallBackContacts.JobTitle != '' && $scope.CallBackContacts.JobTitle != NaN && $scope.CallBackContacts.JobTitle != undefined)
                        $scope.CallBackContacts.JobTitleRequired = true;

                    if (model.CallbackContactDetails.CallbackMethod != null && model.CallbackContactDetails.CallbackMethod != undefined && model.CallbackContactDetails.CallbackMethod != '' && model.CallbackContactDetails.CallbackMethod != NaN)
                        $scope.CallBackContacts.CallBackMethod = model.CallbackContactDetails.CallbackMethod;

                    if (model.CallbackContactDetails.PhoneNumber != null && model.CallbackContactDetails.PhoneNumber != undefined && model.CallbackContactDetails.PhoneNumber != "") {
                        $scope.CallBackContacts.Phone = model.CallbackContactDetails.PhoneNumber.split('.')[1];
                        $scope.CallBackContacts.PhoneCode = model.CallbackContactDetails.PhoneNumber.split('.')[0].replace(/\+/g, "");
                        ddlCallBackPhoneCode.select2("val", $scope.CallBackContacts.PhoneCode)
                    }
                    else {
                        $scope.CallBackContacts.Phone = "";
                        $scope.CallBackContacts.PhoneCode = "";
                    }

                    $scope.CallBackContacts.PhoneExt = model.CallbackContactDetails.PhoneNumberExt;

                    if (model.CallbackContactDetails.FaxNumber != null && model.CallbackContactDetails.FaxNumber != undefined && model.CallbackContactDetails.FaxNumber != "") {
                        $scope.CallBackContacts.Fax = model.CallbackContactDetails.FaxNumber.split('.')[1];
                        $scope.CallBackContacts.FaxCode = model.CallbackContactDetails.FaxNumber.split('.')[0].replace(/\+/g, "")

                        ddlCallBackFaxCode.select2("val", $scope.CallBackContacts.FaxCode);
                    }
                    else {
                        $scope.CallBackContacts.Fax = "";
                        $scope.CallBackContacts.FaxCode = ""
                    }


                    $scope.CallBackContacts.PhoneExt = model.CallbackContactDetails.PhoneNumberExt;
                    $scope.CallBackContacts.Fax = model.CallbackContactDetails.FaxNumber;
                    if ($scope.CallBackContacts.Fax != '' && $scope.CallBackContacts.Fax != NaN && $scope.CallBackContacts.Fax != undefined)
                        $scope.CallBackContacts.FaxRequired = true;

                    $scope.CallBackContacts.EmailAddress = model.CallbackContactDetails.EmailAddress;

                    $scope.CallBackContacts.CompanyName = model.CallbackContactDetails.CompanyName
                    $scope.CallBackContacts.Department = model.CallbackContactDetails.Department
                    $scope.CallBackContacts.Address = model.CallbackContactDetails.Address1
                    $scope.CallBackContacts.Address1 = model.CallbackContactDetails.Address2
                    if ($scope.CallBackContacts.Address1 != '' && $scope.CallBackContacts.Address1 != NaN && $scope.CallBackContacts.Address1 != undefined)
                        $scope.CallBackContacts.Address1Required = true;

                    $scope.CallBackContacts.POBox = model.CallbackContactDetails.POBox
                    if ($scope.CallBackContacts.POBox != '' && $scope.CallBackContacts.POBox != NaN && $scope.CallBackContacts.POBox != undefined)
                        $scope.CallBackContacts.POBoxRequired = true;
                    $scope.CallBackContacts.City = model.CallbackContactDetails.City
                    $scope.CallBackContacts.StateProvince = model.CallbackContactDetails.StateProvince
                    $scope.CallBackContacts.ZIPPostalCode = model.CallbackContactDetails.PostalCode
                    if (model.CallbackContactDetails.Country != null && model.CallbackContactDetails.Country != undefined && model.CallbackContactDetails.Country != "")
                        $scope.CallBackContacts.Country = model.CallbackContactDetails.Country
                    ddlCallBackContactsCountry.select2("val", $scope.CallBackContacts.Country)

                    $scope.CallBackContacts.DestinationSame = model.CallbackContactDetails.DestinationSame

                }
                //FILL ADMIN CONTACTS ON REISSUE
                if (model.AdminContactDetails != null) {
                    $scope.AdminContacts.FirstName = model.AdminContactDetails.FirstName
                    $scope.AdminContacts.LastName = model.AdminContactDetails.LastName
                    $scope.AdminContacts.CompanyName = model.AdminContactDetails.Organization
                    $scope.AdminContacts.JobTitle = model.AdminContactDetails.JobTitle
                    $scope.AdminContacts.Address = model.AdminContactDetails.Address1
                    $scope.AdminContacts.Address1 = model.AdminContactDetails.Address2
                    $scope.AdminContacts.City = model.AdminContactDetails.City
                    $scope.AdminContacts.StateProvince = model.AdminContactDetails.StateProvince
                    $scope.AdminContacts.ZIPPostalCode = model.AdminContactDetails.PostalCode
                    if (model.AdminContactDetails.Country != null && model.AdminContactDetails.Country != undefined && model.AdminContactDetails.Country != "")
                        $scope.AdminContacts.Country = model.AdminContactDetails.Country

                    ddlAdminContactsCountry.select2("val", $scope.AdminContacts.Country);

                    if (model.AdminContactDetails.Phone != null && model.AdminContactDetails.Phone != undefined && model.AdminContactDetails.Phone != "") {
                        $scope.AdminContacts.PhoneNumber = model.AdminContactDetails.Phone.split('.')[1]
                        $scope.AdminContacts.PhoneCode = model.AdminContactDetails.Phone.split('.')[0].replace(/\+/g, "");
                        ddlAdminPhoneCode.select2("val", $scope.AdminContacts.PhoneCode)
                        if ($scope.AdminContacts.PhoneNumber.indexOf("x") != -1) {
                            $scope.AdminContacts.PhoneNumberExt = $scope.AdminContacts.PhoneNumber.split('x')[1].replace(/\x/g, "");
                            $scope.AdminContacts.PhoneNumber = $scope.AdminContacts.PhoneNumber.split('x')[0];
                            $scope.AdminContacts.PhoneExtCheckBox = true;
                        }

                    } else {
                        $scope.AdminContacts.PhoneNumber = "";
                        $scope.AdminContacts.PhoneCode = "";
                    }
                    if (model.AdminContactDetails.PhoneExt != null && model.AdminContactDetails.PhoneExt != "")
                        $scope.AdminContacts.PhoneNumberExt = model.AdminContactDetails.PhoneExt
                    if ($scope.AdminContacts.PhoneNumberExt != null && $scope.AdminContacts.PhoneNumberExt != "")
                        $scope.AdminContacts.PhoneExtCheckBox = true;

                    if (model.AdminContactDetails.Fax != null && model.AdminContactDetails.Fax != undefined && model.AdminContactDetails.Fax != "") {
                        $scope.AdminContacts.FaxNumber = model.AdminContactDetails.Fax.split('.')[1];
                        $scope.AdminContacts.FaxCode = model.AdminContactDetails.Fax.split('.')[0].replace(/\+/g, "");
                        ddlAdminFaxCode.select2("val", $scope.AdminContacts.FaxCode);
                    } else {
                        $scope.AdminContacts.FaxNumber = "";
                        $scope.AdminContacts.FaxCode = "";
                    }

                    if ($scope.SSLInfoSectionViewModel.ProviderName.toUpperCase() == 'COMODO' && (model.AdminContactDetails.EmailAddress == "" || model.AdminContactDetails.EmailAddress == null))
                        $scope.AdminContacts.EmailAddress = model.UserEmail;
                    else
                    	$scope.AdminContacts.EmailAddress = model.AdminContactDetails.EmailAddress;

                } else {
                    if ($scope.SSLInfoSectionViewModel.ProviderName.toUpperCase() == 'COMODO') 
                        $scope.AdminContacts.EmailAddress = model.UserEmail;
                    else
                        $scope.AdminContacts.EmailAddress = model.AdminContactDetails.EmailAddress;
                }


                //FILL TECH CONTACTS ON REISSUE
                if (model.TechContactDetails != null) {

                    $scope.TechContacts.FirstName = model.TechContactDetails.FirstName
                    $scope.TechContacts.LastName = model.TechContactDetails.LastName
                    $scope.TechContacts.CompanyName = model.TechContactDetails.Organization
                    $scope.TechContacts.JobTitle = model.TechContactDetails.JobTitle
                    $scope.TechContacts.Address = model.TechContactDetails.Address1
                    $scope.TechContacts.Address1 = model.TechContactDetails.Address2
                    $scope.TechContacts.City = model.TechContactDetails.City
                    $scope.TechContacts.StateProvince = model.TechContactDetails.StateProvince
                    $scope.TechContacts.ZIPPostalCode = model.TechContactDetails.PostalCode
                    if (model.TechContactDetails.Country != null && model.TechContactDetails.Country != undefined && model.TechContactDetails.Country != "")
                        $scope.TechContacts.Country = model.TechContactDetails.Country
                    ddlTechContactsCountry.select2("val", $scope.TechContacts.Country);
                    if (model.TechContactDetails.Phone != null && model.TechContactDetails.Phone != undefined && model.TechContactDetails.Phone != "") {
                        $scope.TechContacts.PhoneNumber = model.TechContactDetails.Phone.split('.')[1]
                        $scope.TechContacts.PhoneCode = model.TechContactDetails.Phone.split('.')[0].replace(/\+/g, "");
                        ddlTechPhoneCode.select2("val", $scope.TechContacts.PhoneCode)
                        if ($scope.TechContacts.PhoneNumber.indexOf("x") != -1) {
                            $scope.TechContacts.PhoneNumberExt = $scope.TechContacts.PhoneNumber.split('x')[1].replace(/\x/g, "");
                            $scope.TechContacts.PhoneNumber = $scope.TechContacts.PhoneNumber.split('x')[0];
                            $scope.TechContacts.PhoneExtCheckBox = true;
                        }
                    }
                    else {
                        $scope.TechContacts.PhoneNumber = "";
                        $scope.TechContacts.PhoneCode = "";
                    }
                    if (model.TechContactDetails.PhoneExt != null && model.TechContactDetails.PhoneExt != "")
                        $scope.TechContacts.PhoneNumberExt = model.TechContactDetails.PhoneExt
                    if ($scope.TechContacts.PhoneNumberExt != null && $scope.TechContacts.PhoneNumberExt != "")
                        $scope.TechContacts.PhoneExtCheckBox = true;

                    if (model.TechContactDetails.Fax != null && model.TechContactDetails.Fax != undefined && model.TechContactDetails.Fax != "") {
                        $scope.TechContacts.FaxNumber = model.TechContactDetails.Fax.split('.')[1];
                        $scope.TechContacts.FaxCode = model.TechContactDetails.Fax.split('.')[0].replace(/\+/g, "");
                        ddlTechFaxCode.select2("val", $scope.TechContacts.FaxCode);
                    }
                    else {
                        $scope.TechContacts.FaxNumber = "";
                        $scope.TechContacts.FaxCode = "";
                    }


                    $scope.TechContacts.EmailAddress = model.TechContactDetails.EmailAddress

                }


            }




            //$("select.coreuiselect").select2({ minimumResultsForSearch: -1 });

            // PRIMARY DOMAIN SHOULD NOT BE DISPLAYED IN PRIMARY DOMAIN TEXT BOX ON REISSUE 
            $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.CommonName = "";

        }
        else {
            $scope.SSLInfoSectionViewModel = model;
            $scope.sslnotification.alerts.clear();
            $scope.sslnotification.alerts.addError(model.Message, $scope.sslnotificationAlertArguments)
            return false;
        }
    }

    $scope.addonDomains = [];
    $scope.oldAddonDomains = [];
    $scope.oldPrimaryDomain = [];
    $scope.AddressList = {
        CompanyName: '',
        AssumedName: '',
        AssumedNameRequired: false,
        Department: '',
        DepartMentRequired: false,
        CompanyNumber: '',
        CompanyNumberRequired: false,
        DunsNumber: '',
        DunsNumberRequired: false,
        IncorporatingAgency: '',
        CityOfIncorporation: '',
        CityOfIncorporationRequired: false,
        StateprovinceofIncorporation: '',
        StateofIncorporationRequired: false,
        CountryofIncorporation: '',
        CountryofIncorporationRequired: false,
        Address: '',
        Address1: '',
        Address1Required: false,
        POBox: '',
        POBoxRequired: false,
        City: '',
        StateProvince: '',
        ZIPPostalCode: '',
        Country: '',
        EmailAddress: '',
        BusinessCategory: '',
        DateofIncorporation: '',
        DateofIncorporationRequired: false,
        CompanyContacts: '',
        AdminstrativeContacts: '',
        PhoneCode: '',
        PhoneNumber: '',
        PhoneNumberExt: '',
        PhoneExtCheckBox: false,
        FaxCode: '',
        FaxNumber: '',


    };

    $scope.CallBackContacts = {

        FirstName: '',
        LastName: '',
        JobTitle: '',
        JobTitleRequired: false,
        CallBackMethod: '',
        PhoneCode: '',
        Phone: '',
        PhoneExt: '',
        PhoneExtCheckBox: false,
        FaxCode: '',
        Fax: '',
        FaxRequired: false,
        EmailAddress: '',
        DestinationSame: false,
        CompanyName: '',
        Department: '',
        Address1: '',
        Address: '',
        Address1Required: false,
        POBox: '',
        POBoxRequired: false,
        City: '',
        StateProvince: '',
        ZIPPostalCode: '',
        Country: '',
    }


    $scope.AdminContacts = {

        FirstName: '',
        LastName: '',
        CompanyName: '',
        JobTitle: '',
        Address: '',
        Address1: '',
        City: '',
        StateProvince: '',
        ZIPPostalCode: '',
        Country: $scope.CountryCode,
        PhoneCode: '',
        PhoneNumber: '',
        PhoneNumberExt: '',
        PhoneExtCheckBox: false,
        FaxCode: '',
        FaxNumber: '',
        EmailAddress: '',
        EmailExtension: '',
        CheckUseBillingAndTechAddress: false
    }
    $scope.TechContacts = {

        FirstName: '',
        LastName: '',
        CompanyName: '',
        JobTitle: '',
        Address: '',
        Address1: '',
        City: '',
        StateProvince: '',
        ZIPPostalCode: '',
        Country: $scope.CountryCode,
        PhoneCode: '',
        PhoneNumber: '',
        PhoneNumberExt: '',
        PhoneExtCheckBox: false,
        FaxCode: '',
        FaxNumber: '',
        EmailAddress: '',
        EmailExtension: '',
        CheckUseNamecheapContacts: false
    }

    $scope.emailpattern = nc_Val_EmailPattern;
    $scope.firstandlastnamepattern = nc_Val_FnameLnameRegExpression
    $scope.orgcompannamepatern = nc_Val_OrgCompanyNameWithAmpersandRegExpression
    $scope.addresspattern = nc_Val_AddressWithAmpersandRegex
    $scope.citypattern = nc_Val_CityRegex
    $scope.companynumberpattern = nc_Val_AlphaNumeric
    $scope.statepattern = nc_Val_StateRegex
    $scope.postalcodepattern = nc_Val_PostalCodeRegex;
