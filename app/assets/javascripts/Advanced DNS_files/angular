app.controller('WizardContactContoller', ['$scope', '$rootScope', 'httpRepository', '$cookies', '$cookieStore', '$filter', '$modal', '$location', 'notificationService', 'pageHelper', '$timeout', '$attrs',
function ($scope, $rootScope, httpRepository, $cookies, $cookieStore, $filter, $modal, $location, notificationService, pageHelper, $timeout, $attrs) {

    $scope.regcontact = {
        FirstName: '',
        LastName: '',
        CompanyName: '',
        JobTitle: '',
        Address: '',
        Address1: '',
        City: '',
        StateProvince: '',
        ZIPPostalCode: '',
        Country: $scope.CountryCode,
        PhoneCode: '',
        PhoneNumber: '',
        PhoneNumberExt: '',
        PhoneExtCheckBox: false,
        FaxCode: '',
        FaxNumber: '',
        EmailAddress: '',
        EmailExtension: '',
        CheckUseNamecheapContacts: false
     }

    $scope.admcontact = {
        FirstName: '',
        LastName: '',
        CompanyName: '',
        JobTitle: '',
        Address: '',
        Address1: '',
        City: '',
        StateProvince: '',
        ZIPPostalCode: '',
        Country: $scope.CountryCode,
        PhoneCode: '',
        PhoneNumber: '',
        PhoneNumberExt: '',
        PhoneExtCheckBox: false,
        FaxCode: '',
        FaxNumber: '',
        EmailAddress: '',
        EmailExtension: '',
        CheckUseBillingAndTechAddress: false
    }

    $scope.teccontact = {
        FirstName: '',
        LastName: '',
        CompanyName: '',
        JobTitle: '',
        Address: '',
        Address1: '',
        City: '',
        StateProvince: '',
        ZIPPostalCode: '',
        Country: $scope.CountryCode,
        PhoneCode: '',
        PhoneNumber: '',
        PhoneNumberExt: '',
        PhoneExtCheckBox: false,
        FaxCode: '',
        FaxNumber: '',
        EmailAddress: '',
        EmailExtension: '',
        CheckUseNamecheapContacts: false
    }

    $scope.billcontact = {
        FirstName: '',
        LastName: '',
        CompanyName: '',
        JobTitle: '',
        Address: '',
        Address1: '',
        City: '',
        StateProvince: '',
        ZIPPostalCode: '',
        Country: $scope.CountryCode,
        PhoneCode: '',
        PhoneNumber: '',
        PhoneNumberExt: '',
        PhoneExtCheckBox: false,
        FaxCode: '',
        FaxNumber: '',
        Email: '',
        EmailExtension: '',
        CheckUseNamecheapContacts: false
    }
    $scope.IsChooseContactModalPopUp = false;
    $scope.openChooseContactModalPopUp = function (requestFrom) {
        if (!$scope.IsChooseContactModalPopUp)
        {
            var modalInstance = $modal.open({
                templateUrl: "/Domains/ChooseAddressContact/",
                controller: 'ChooseContactModalCtrl',
                size: 'lg',
                backdrop: 'static',
            });

            modalInstance.result.then(function (model) {
                $scope.IsChooseContactModalPopUp = false;
                if (model != '') {
                    if (requestFrom == 'Registrant') {
                        $scope.regcontact.FirstName = model.FirstName;
                        $scope.regcontact.LastName = model.LastName;
                        $scope.regcontact.CompanyName = model.Organization;
                        $scope.regcontact.JobTitle = model.JobTitle;
                        $scope.regcontact.AddressLine1 = model.Address1;
                        $scope.regcontact.AddressLine2 = model.Address2;
                        $scope.regcontact.City = model.City;
                        $scope.regcontact.StateProvince = model.StateProvince;
                        $scope.regcontact.ZIPPostalCode = model.PostalCode;
                        var ddlCountryRegistrantMax = $('form[name="ctrlfrmreg.frmdomainregistrantcontacts"] select#Country');
                        if (ddlCountryRegistrantMax.length) {
                            ddlCountryRegistrantMax.select2("val", model.Country)
                            $scope.Country = model.Country;
                        }
                        if (model.Phone.indexOf('.') != -1) {

                            $scope.regcontact.PhoneNumber = model.Phone.split('.')[1];
                        }
                        $scope.regcontact.PhoneNumberExt = model.PhoneExt;
                        if (model.Fax.indexOf('.') != -1) {

                            $scope.regcontact.FaxNumber = model.Fax.split('.')[1];
                        }
                        if (model.PhoneExt != '') {
                            $scope.regcontact.PhoneExtCheckBox = true;
                            if ($("#PhSectionRegistrant").length)
                                $("#PhSectionRegistrant").addClass("has-extension");
                            if ($("#PhSectionRegistrantMin").length)
                                $("#PhSectionRegistrantMin").addClass("has-extension");
                        }
                        $scope.regcontact.Email = model.EmailAddress;

                        var ddlPhoneCodeRegistrantMax = $('form[name="ctrlfrmreg.frmdomainregistrantcontacts"] select#PhoneCode');
                        if (ddlPhoneCodeRegistrantMax.length) {
                            if (model.Phone.indexOf('.') != -1) {

                                ddlPhoneCodeRegistrantMax.select2("val", model.Phone.split('.')[0].replace(/\+/g, ""))
                                $scope.regcontact.PhoneCode = model.Phone.split('.')[0].replace(/\+/g, "");
                            }
                        }
                        var ddlFaxCodeRegistrantMax = $('form[name="ctrlfrmreg.frmdomainregistrantcontacts"] select#FaxCode');
                        if (ddlFaxCodeRegistrantMax.length) {
                            if (model.Fax.indexOf('.') != -1) {

                                ddlFaxCodeRegistrantMax.select2("val", model.Fax.split('.')[0].replace(/\+/g, ""))
                                $scope.regcontact.FaxCode = model.Fax.split('.')[0].replace(/\+/g, "");
                            }
                        }
                    }
                    if (requestFrom == 'Admin') {
                        $scope.admcontact.FirstName = model.FirstName;
                        $scope.admcontact.LastName = model.LastName;
                        $scope.admcontact.CompanyName = model.Organization;
                        $scope.admcontact.JobTitle = model.JobTitle;
                        $scope.admcontact.AddressLine1 = model.Address1;
                        $scope.admcontact.AddressLine2 = model.Address2;
                        $scope.admcontact.City = model.City;
                        $scope.admcontact.StateProvince = model.StateProvince;
                        $scope.admcontact.ZIPPostalCode = model.PostalCode;
                        var ddlCountryAdminMax = $('form[name="ctrladmin.frmdomainadmincontacts"] select#Country');
                        if (ddlCountryAdminMax.length) {
                            ddlCountryAdminMax.select2("val", model.Country)
                            $scope.Country = model.Country;
                        }
                        if (model.Phone.indexOf('.') != -1) {

                            $scope.admcontact.PhoneNumber = model.Phone.split('.')[1];
                        }
                        $scope.admcontact.PhoneNumberExt = model.PhoneExt;
                        if (model.Fax.indexOf('.') != -1) {

                            $scope.admcontact.FaxNumber = model.Fax.split('.')[1];
                        }
                        if (model.PhoneExt != '') {
                            $scope.admcontact.PhoneExtCheckBox = true;
                            if ($("#PhSectionMax").length)
                                $("#PhSectionMax").addClass("has-extension");
                            if ($("#PhSectionMin").length)
                                $("#PhSectionMin").addClass("has-extension");
                        }
                        $scope.admcontact.Email = model.EmailAddress;

                        var ddlPhoneCodeAdminMax = $('form[name="ctrladmin.frmdomainadmincontacts"] select#PhoneCode');
                        if (ddlPhoneCodeAdminMax.length) {
                            if (model.Phone.indexOf('.') != -1) {

                                ddlPhoneCodeAdminMax.select2("val", model.Phone.split('.')[0].replace(/\+/g, ""))
                                $scope.admcontact.PhoneCode = model.Phone.split('.')[0].replace(/\+/g, "");
                            }
                        }
                        var ddlFaxCodeAdminMax = $('form[name="ctrladmin.frmdomainadmincontacts"] select#FaxCode');
                        if (ddlFaxCodeAdminMax.length) {
                            if (model.Fax.indexOf('.') != -1) {

                                ddlFaxCodeAdminMax.select2("val", model.Fax.split('.')[0].replace(/\+/g, ""))
                                $scope.admcontact.FaxCode = model.Fax.split('.')[0].replace(/\+/g, "");
                            }
                        }
                    }


                    if (requestFrom == 'Tech') {
                        $scope.teccontact.FirstName = model.FirstName;
                        $scope.teccontact.LastName = model.LastName;
                        $scope.teccontact.CompanyName = model.Organization;
                        $scope.teccontact.JobTitle = model.JobTitle;
                        $scope.teccontact.AddressLine1 = model.Address1;
                        $scope.teccontact.AddressLine2 = model.Address2;
                        $scope.teccontact.City = model.City;
                        $scope.teccontact.StateProvince = model.StateProvince;
                        $scope.teccontact.ZIPPostalCode = model.PostalCode;
                        var ddlCountryTechMax = $('form[name="ctrlfrmtechnical.frmdomaintechnicalcontacts"] select#Country');
                        if (ddlCountryTechMax.length) {
                            ddlCountryTechMax.select2("val", model.Country)
                            $scope.Country = model.Country;
                        }
                        if (model.Phone.indexOf('.') != -1) {

                            $scope.teccontact.PhoneNumber = model.Phone.split('.')[1];
                        }
                        $scope.teccontact.PhoneNumberExt = model.PhoneExt;
                        if (model.Fax.indexOf('.') != -1) {

                            $scope.teccontact.FaxNumber = model.Fax.split('.')[1];
                        }
                        if (model.PhoneExt != '') {
                            $scope.teccontact.PhoneExtCheckBox = true;
                            if ($("#PhSectionTechnical").length)
                                $("#PhSectionTechnical").addClass("has-extension");
                            if ($("#PhSectionTechMin").length)
                                $("#PhSectionTechMin").addClass("has-extension");
                        }
                        $scope.teccontact.Email = model.EmailAddress;

                        var ddlPhoneCodeTechMax = $('form[name="ctrlfrmtechnical.frmdomaintechnicalcontacts"] select#PhoneCode');
                        if (ddlPhoneCodeTechMax.length) {
                            if (model.Phone.indexOf('.') != -1) {

                                ddlPhoneCodeTechMax.select2("val", model.Phone.split('.')[0].replace(/\+/g, ""))
                                $scope.teccontact.PhoneCode = model.Phone.split('.')[0].replace(/\+/g, "");
                            }
                        }
                        var ddlFaxCodeTechMax = $('form[name="ctrlfrmtechnical.frmdomaintechnicalcontacts"] select#FaxCode');
                        if (ddlFaxCodeTechMax.length) {
                            if (model.Fax.indexOf('.') != -1) {

                                ddlFaxCodeTechMax.select2("val", model.Fax.split('.')[0].replace(/\+/g, ""))
                                $scope.teccontact.FaxCode = model.Fax.split('.')[0].replace(/\+/g, "");
                            }
                        }
                    }
                    if (requestFrom == 'Billing') {

                        $scope.billcontact.FirstName = model.FirstName;
                        $scope.billcontact.LastName = model.LastName;
                        $scope.billcontact.CompanyName = model.Organization;
                        $scope.billcontact.JobTitle = model.JobTitle;
                        $scope.billcontact.AddressLine1 = model.Address1;
                        $scope.billcontact.AddressLine2 = model.Address2;
                        $scope.billcontact.City = model.City;
                        $scope.billcontact.StateProvince = model.StateProvince;
                        $scope.billcontact.ZIPPostalCode = model.PostalCode;
                        var ddlCountryBillinghMax = $('form[name="ctrlfrmbilling.frmdomainbillingcontacts"] select#Country');
                        if (ddlCountryBillinghMax.length) {
                            ddlCountryBillinghMax.select2("val", model.Country)
                            $scope.Country = model.Country;
                        }
                        if (model.Phone.indexOf('.') != -1) {

                            $scope.billcontact.PhoneNumber = model.Phone.split('.')[1];
                        }
                        $scope.billcontact.PhoneNumberExt = model.PhoneExt;
                        if (model.Fax.indexOf('.') != -1) {

                            $scope.billcontact.FaxNumber = model.Fax.split('.')[1];
                        }
                        if (model.PhoneExt != '') {
                            $scope.billcontact.PhoneExtCheckBox = true;
                            if ($("#PhSectionBilling").length)
                                $("#PhSectionBilling").addClass("has-extension");
                            if ($("#PhSectionBillingMin").length)
                                $("#PhSectionBillingMin").addClass("has-extension");
                        }
                        $scope.billcontact.Email = model.EmailAddress;

                        var ddlPhoneCodeBillingMax = $('form[name="ctrlfrmbilling.frmdomainbillingcontacts"] select#PhoneCode');
                        if (ddlPhoneCodeBillingMax.length) {
                            if (model.Phone.indexOf('.') != -1) {

                                ddlPhoneCodeBillingMax.select2("val", model.Phone.split('.')[0].replace(/\+/g, ""))
                                $scope.billcontact.PhoneCode = model.Phone.split('.')[0].replace(/\+/g, "");
                            }
                        }
                        var ddlFaxCodeBillingMax = $('form[name="ctrlfrmbilling.frmdomainbillingcontacts"] select#FaxCode');
                        if (ddlFaxCodeBillingMax.length) {
                            if (model.Fax.indexOf('.') != -1) {

                                ddlFaxCodeBillingMax.select2("val", model.Fax.split('.')[0].replace(/\+/g, ""))
                                $scope.billcontact.FaxCode = model.Fax.split('.')[0].replace(/\+/g, "");
                            }
                        }
                    }

                }

            });

            modalInstance.opened.then(function (model) {
                $scope.IsChooseContactModalPopUp = true;

            });
        }
     

}
}]);;
app.controller('bulkModificationListCtrl', ['$scope', '$rootScope', 'dashboardRepository', '$filter', '$modal', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'ncGridEventNames', 'forEachPromice',
function ($scope, $rootScope, dashboardRepository, $filter, $modal, notificationService, pageHelper, $q, ncGridParams, $sce, ncGridEventNames,forEachPromice) {
    $scope.pageHelper = pageHelper;//for call helpers methods from view
    $scope.pageNotification = new notificationService.instance();
    $scope.BulkModifications = {};
    
    $scope.pageBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.showLoadPanel = true;
            instance.showContent = false;
            instance.pageNgGridSettings = new ncGridParams();
            instance.pageNgGridSettings.parameters.mapping.serverChunkSize = 200;
            instance.pageNgGridSettings.settings.getData = function ($defer, ncGridState) {
                instance.filterStatusPropertyNames = [];
                dashboardRepository.dashboardInfo.getBulkModificationsDetailsList(ncGridState).then(function (result) {
                    for (var i = 0; i < result.Result.Data.length; i++) {
                        result.Result.Data[i].chbId = "chbId" + i;
                        result.Result.Data[i].IsHiddenOrCancel = false;
                        for (var serviceIndex = 0; serviceIndex < result.Result.Data.length; serviceIndex++) {
                            var serviceStatusFilterValue = "Result.Data." + serviceIndex + ".Status";
                            if (instance.filterStatusPropertyNames.indexOf(serviceStatusFilterValue) == -1)
                                instance.filterStatusPropertyNames.push(serviceStatusFilterValue);
                        }

                    }
                    $defer.resolve(result.Result);
                    instance.showLoadPanel = false; 
                    instance.showContent = true;
                });
            }
                instance.statusList = [
                    { header: "Waiting", propertyname: "Status", propertyvalue: "WAITING" },
                    { header: "In Progress", propertyname: "Status", propertyvalue: "INPROGRESS" },
                    { header: "Partially Failed", propertyname: "Status", propertyvalue: "PARTIALLYFAILED" },
                    { header: "Failed", propertyname: "Status", propertyvalue: "FAILED" },
                    { header: "Completed", propertyname: "Status", propertyvalue: "COMPLETED" },
                    { header: "Partially Completed", propertyname: "Status", propertyvalue: "PARTIALLYCOMPLETED" },
                ];
            
                instance.actionList = [
                    { header: "DNS/Host Records", propertyname: "Type", propertyvalue: "DNS/HOST RECORDS" },
                    { header: "Domain Lock", propertyname: "Type", propertyvalue: "DOMAIN LOCK" },
                    { header: "Domain Contacts", propertyname: "Type", propertyvalue: "DOMAIN CONTACTS" },
                    { header: "WhoisGuard", propertyname: "Type", propertyvalue: "WHOISGUARD" },
                    { header: "Edit Auto-Renewal", propertyname: "Type", propertyvalue: "EDIT AUTO-RENEWAL" },
                    { header: "Verify Domain Contacts", propertyname: "Type", propertyvalue: "VERIFY DOMAIN CONTACTS" }
                ];
                
                instance.pageNgGridSettings.settings.reload();
            },

        onSuccess: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;
        },
        onLoading: function (params) {
            var instance = this.instance;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.msg, {
                hasClose: true,
                isAutoHide: true
            });
        }

    });

    $scope.pageAction = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            var loadingMessage = '';
            var suceessMsg = false;
            instance.Click = function (batchId, status, actionToPerform) {
                if (actionToPerform == 'cancel') {
                    loadingMessage = 'Canceling the bulk action...';
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading, loadingMessage);
                    dashboardRepository.dashboardInfo.BulkModificationCancel(batchId,'bulkModifyPage').then(
                        function (result) {
                            if (result.Error == true) {
                                $scope.BulkModifications = {};
                                suceessMsg = false;
                                instance.asyncStatus(pageHelper.AsyncStatus.Error, { msg: result.Msg });
                            }
                            else if (result.Result != null) { 
                                suceessMsg = true;
                                if (result.Result.IsCancel == true) {
                                    var itemToCancel = $.grep($scope.pageBehavior.pageNgGridSettings.parameters.storage.requestData, function (element, index) {
                                        return element.BatchId == batchId;
                                    });
                                    for (i = 0; i < itemToCancel.length; i++) {
                                        itemToCancel[i].IsHiddenOrCancel = true;
                                    }
                                }
                                instance.asyncStatus(pageHelper.AsyncStatus.Success, { msg: result.Msg });
                            }
                            else {
                                $scope.BulkModificationsCount = 0;
                                suceessMsg = true;
                                instance.asyncStatus(pageHelper.AsyncStatus.Success, { msg: result.Msg });
                            }
                            instance.asyncStatus((suceessMsg == true) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, { Message: result.Msg });
                        });
                } else if (actionToPerform == 'hide') {
                    loadingMessage = 'Hiding the bulk action...';
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading, loadingMessage);
                    dashboardRepository.dashboardInfo.BulkModificationHide(batchId, status, 'bulkModifyPage').then(
                            function (result) {
                                if (result.Error == true) {
                                    $scope.BulkModifications = {};
                                    suceessMsg = false;
                                    instance.asyncStatus(pageHelper.AsyncStatus.Error, { msg: result.Msg });
                                }
                                else if (result.Result != null) {
                                    suceessMsg = true;
                                    if (result.Result.IsHide == true) {
                                        var itemToHide = $.grep($scope.pageBehavior.pageNgGridSettings.parameters.storage.requestData, function (element, index) {
                                            return element.BatchId == batchId;
                                        });
                                        for (i = 0; i < itemToHide.length; i++) {
                                            itemToHide[i].IsHiddenOrCancel = true;
                                        }
                                    }
                                    instance.asyncStatus(pageHelper.AsyncStatus.Success, { msg: result.Msg });
                                }
                                else {
                                    $scope.BulkModificationsCount = 0;
                                    suceessMsg = true;
                                    instance.asyncStatus(pageHelper.AsyncStatus.Success, { msg: result.Msg });
                                }
                                instance.asyncStatus((suceessMsg == true) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, { Message: result.Msg });
                            });
                }
            }
         },
        
        onSuccess: function (params) {
            var instance = this.instance;
            if (params.sender == 'getModel') {
                instance.showContent = true;
                instance.model = params.Result;
                instance.pageNgGridSettings.settings.reload();
            }
            $scope.pageNotification.alerts.clear();
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(params.msg, {
                hasClose: true,
                isAutoHide: true
            });
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onLoading: function (params) {
            var instance = this.instance;
            $scope.pageNotification.alerts.clear();
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('<B>' + params + '</B> Please wait.', false);
            instance.isDisabled = true;
            instance.showError = false;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.msg, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });


    $scope.openBulkModificationsDetailsPage = function (batchId, paramType) {
        paramType = paramType.replace(/[^a-zA-Z]/g, "").replace(/\s/g,"");
        var sourcePath = 'fromBulkModify';
        window.location.href = '/dashboard/BulkModifyDetails/' + batchId + '/' + paramType + '/' + sourcePath + '';
    }

    // FUNCTION TO OPEN THE REMOVE ADD ON DOMAIN MODAL POPUP
    $scope.IsCancelMessageModalPopUpOpened = false;
    $scope.openCancelMessageModalPopUp = function (batchId, status, actionToPerform) {
        if (!$scope.IsCancelMessageModalPopUpOpened)
        {
            var activeModalInstance = $modal.open({
                templateUrl: "/Domains/SSL/Common/PromptRemove",
                controller: 'promptRemoveModalCtrl',
                size: 'lg',
                resolve: {
                    modalTitle: function () {
                        return "Cancel Bulk Domain";
                    },
                    modalContent: function () {
                        return "Are you sure want to cancel this batch domain?";
                    }
                }
            });
            activeModalInstance.result.then(function (msg) {
                $scope.IsCancelMessageModalPopUpOpened = false;
                if (msg == 'yes') {
                    $scope.pageAction.Click(batchId, status, actionToPerform);
                }
                //when user click 
            }, function () {
                $scope.IsCancelMessageModalPopUpOpened = false;
                // any result
                activeModalInstance = null;
            });
            activeModalInstance.opened.then(function () {
                $scope.IsCancelMessageModalPopUpOpened = true;
            });
        }

    }

}]);
;
app.controller('bulkModifyDetailsCtrl', [
	'$scope', '$rootScope', 'dashboardRepository', '$cookies', '$cookieStore', '$filter', '$modal', '$location', 'notificationService', 'pageHelper', '$timeout', '$attrs', 'ncGridParams',
	function($scope, $rootScope, dashboardRepository, $cookies, $cookieStore, $filter, $modal, $location, notificationService, pageHelper, $timeout, $attrs, ncGridParams) {
		$scope.isChecked = false;

		$scope.returnPath = {};

		this.initialize = function(model) {
			$scope.pageBehavior.Load(model);
			$scope.returnPath = model.ReturnPath;
		};

		$rootScope.closeLightbox = function() {
			if ($scope.returnPath == "fromDashboard") {
				window.location.href = '/Dashboard/Index';
			} else {
				window.location.href = '/Dashboard/BulkModifications';
			}

		}

		String.prototype.similar = function(str) {
			return (this.indexOf(str) !== -1);
		};

		String.prototype.startsWith = function(str) {
			return this.indexOf(str) === 0;
		};

		function toPascalCase(str) {
			return str.replace(/\w\S*/g, function(txt) { return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase(); });
		}

		$scope.pageBehavior = new pageHelper.AsyncStateBehavior({
			constructor: function() {
				var instance = this.instance;
				instance.showLoadPanel = true;
				instance.showContent = false;
				$scope.BulkModifications = {};
				$scope.BulkModifyDomains = {};
				$scope.BulkModifyBatchDetails = {};
				$scope.RegistrantContacts = [];
				$scope.AdministrativeContacts = [];
				$scope.AuxBillingContacts = [];
				$scope.TechContacts = [];
				$scope.DnsNameServerDetails = {
					NameServerType: '',
					Records: []

				};
				var recCount = 0;

				instance.Load = function(model) {
					$scope.batchId = model.BatchId;

					if (model.Type == 'DOMAINLOCK') {
						$scope.type = "LockAction";
					} else if (model.Type == 'EDITAUTORENEWAL') {
						$scope.type = "autorenewoptions";
					} else if (model.Type == 'VERIFYDOMAINCONTACTS') {
						$scope.type = "ResendVerification";
					} else if (model.Type == 'WHOISGUARD') {
						$scope.type = "WGStatus";
					} else if (model.Type == 'DOMAINCONTACTS') {
						$scope.type = "DOMAINCONTACTS";
					} else if (model.Type == 'DNSHOSTRECORDS') {
						$scope.type = "DNSHOSTRECORDS";
					}

					instance.pageNgGridSettings = new ncGridParams();
					instance.pageNgGridSettings.parameters.search.serchPropertyNames = ['DomainName'];
					instance.pageNgGridSettings.parameters.mapping.serverChunkSize = 1000;
					instance.pageNgGridSettings.settings.getData = function($defer, ncGridState) {
						dashboardRepository.dashboardInfo.BulkModificationsGetDetails(ncGridState, $scope.batchId, $scope.type).then(function(result) {

							if (result.Result != null) {

								if (result.Result.BulkModificationSection != null && result.Result.BulkModificationSection.length > 0) {
									$scope.BulkModifications = result.Result.BulkModificationSection;
								}
								if (result.Result.BulkModificationDetails != null && result.Result.BulkModificationDetails.length > 0) {
									$scope.BulkModifyDomains = result.Result.BulkModificationDetails;
								}
								if (result.Result.MultipleModificationDetails != null && result.Result.MultipleModificationDetails.length > 0) {
									$scope.BulkModifyBatchDetails = result.Result.MultipleModificationDetails;

									for (var i = 0; i < result.Result.MultipleModificationDetails.length; i++) {

										if ($scope.type == 'DOMAINCONTACTS') {

											if ($scope.BulkModifyBatchDetails[i].param.startsWith("Admin") == true) {
												if ($scope.BulkModifyBatchDetails[i].param == "AdminFirstName") {
													$scope.AdministrativeContacts[0] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AdminLastName") {
													$scope.AdministrativeContacts[1] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AdminOrganizationName") {
													$scope.AdministrativeContacts[2] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AdminAddress1") {
													$scope.AdministrativeContacts[3] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AdminCity") {
													$scope.AdministrativeContacts[4] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AdminStateProvince") {
													$scope.AdministrativeContacts[5] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AdminPostalCode") {
													$scope.AdministrativeContacts[6] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AdminCountry") {
													$scope.AdministrativeContacts[7] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AdminPhonePrefix") {
													$scope.AdministrativeContacts[8] = "(" + $scope.BulkModifyBatchDetails[i].paramValue + ")";
												} else if ($scope.BulkModifyBatchDetails[i].param == "AdminPhoneOnly") {
													$scope.AdministrativeContacts[9] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AdminPhoneExt") {
													$scope.AdministrativeContacts[10] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AdminFaxPrefix") {
													$scope.AdministrativeContacts[11] = "(" + $scope.BulkModifyBatchDetails[i].paramValue + ")";
												} else if ($scope.BulkModifyBatchDetails[i].param == "AdminFaxOnly") {
													$scope.AdministrativeContacts[12] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AdminFaxExt") {
													$scope.AdministrativeContacts[13] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AdminEmailAddress") {
													$scope.AdministrativeContacts[14] = $scope.BulkModifyBatchDetails[i].paramValue;
												}


											} else if ($scope.BulkModifyBatchDetails[i].param.startsWith("Registrant") == true) {
												if ($scope.BulkModifyBatchDetails[i].param == "RegistrantFirstName") {
													$scope.RegistrantContacts[0] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "RegistrantLastName") {
													$scope.RegistrantContacts[1] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "RegistrantOrganizationName") {
													$scope.RegistrantContacts[2] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "RegistrantAddress1") {
													$scope.RegistrantContacts[3] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "RegistrantCity") {
													$scope.RegistrantContacts[4] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "RegistrantStateProvince") {
													$scope.RegistrantContacts[5] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "RegistrantPostalCode") {
													$scope.RegistrantContacts[6] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "RegistrantCountry") {
													$scope.RegistrantContacts[7] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "RegistrantPhonePrefix") {
													$scope.RegistrantContacts[8] = "(" + $scope.BulkModifyBatchDetails[i].paramValue + ")";
												} else if ($scope.BulkModifyBatchDetails[i].param == "RegistrantPhoneOnly") {
													$scope.RegistrantContacts[9] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "RegistrantPhoneExt") {
													$scope.RegistrantContacts[10] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "RegistrantFaxPrefix") {
													$scope.RegistrantContacts[11] = "(" + $scope.BulkModifyBatchDetails[i].paramValue + ")";
												} else if ($scope.BulkModifyBatchDetails[i].param == "RegistrantFaxOnly") {
													$scope.RegistrantContacts[12] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "RegistrantFaxExt") {
													$scope.RegistrantContacts[13] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "RegistrantEmailAddress") {
													$scope.RegistrantContacts[14] = $scope.BulkModifyBatchDetails[i].paramValue;
												}

											} else if ($scope.BulkModifyBatchDetails[i].param.startsWith("AuxBilling") == true) {
												if ($scope.BulkModifyBatchDetails[i].param == "AuxBillingFirstName") {
													$scope.AuxBillingContacts[0] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AuxBillingLastName") {
													$scope.AuxBillingContacts[1] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AuxBillingOrganizationName") {
													$scope.AuxBillingContacts[2] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AuxBillingAddress1") {
													$scope.AuxBillingContacts[3] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AuxBillingCity") {
													$scope.AuxBillingContacts[4] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AuxBillingStateProvince") {
													$scope.AuxBillingContacts[5] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AuxBillingPostalCode") {
													$scope.AuxBillingContacts[6] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AuxBillingCountry") {
													$scope.AuxBillingContacts[7] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AuxBillingPhonePrefix") {
													$scope.AuxBillingContacts[8] = "(" + $scope.BulkModifyBatchDetails[i].paramValue + ")";
												} else if ($scope.BulkModifyBatchDetails[i].param == "AuxBillingPhoneOnly") {
													$scope.AuxBillingContacts[9] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AuxBillingPhoneExt") {
													$scope.AuxBillingContacts[10] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AuxBillingFaxPrefix") {
													$scope.AuxBillingContacts[11] = "(" + $scope.BulkModifyBatchDetails[i].paramValue + ")";
												} else if ($scope.BulkModifyBatchDetails[i].param == "AuxBillingFaxOnly") {
													$scope.AuxBillingContacts[12] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AuxBillingFaxExt") {
													$scope.AuxBillingContacts[13] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "AuxBillingEmailAddress") {
													$scope.AuxBillingContacts[14] = $scope.BulkModifyBatchDetails[i].paramValue;
												}

											} else if ($scope.BulkModifyBatchDetails[i].param.startsWith("Tech") == true) {

												if ($scope.BulkModifyBatchDetails[i].param == "TechFirstName") {
													$scope.TechContacts[0] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "TechLastName") {
													$scope.TechContacts[1] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "TechOrganizationName") {
													$scope.TechContacts[2] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "TechAddress1") {
													$scope.TechContacts[3] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "TechCity") {
													$scope.TechContacts[4] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "TechStateProvince") {
													$scope.TechContacts[5] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "TechPostalCode") {
													$scope.TechContacts[6] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "TechCountry") {
													$scope.TechContacts[7] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "TechPhonePrefix") {
													$scope.TechContacts[8] = "(" + $scope.BulkModifyBatchDetails[i].paramValue + ")";
												} else if ($scope.BulkModifyBatchDetails[i].param == "TechPhoneOnly") {
													$scope.TechContacts[9] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "TechPhoneExt") {
													$scope.TechContacts[10] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "TechFaxPrefix") {
													$scope.TechContacts[11] = "(" + $scope.BulkModifyBatchDetails[i].paramValue + ")";
												} else if ($scope.BulkModifyBatchDetails[i].param == "TechFaxOnly") {
													$scope.TechContacts[12] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "TechFaxExt") {
													$scope.TechContacts[13] = $scope.BulkModifyBatchDetails[i].paramValue;
												} else if ($scope.BulkModifyBatchDetails[i].param == "TechEmailAddress") {
													$scope.TechContacts[14] = $scope.BulkModifyBatchDetails[i].paramValue;
												}

											}
										}

										if ($scope.type == 'DNSHOSTRECORDS') {

											var list = [];
											$scope.combinedParams = [[], []];
											var count = 0;
											var temp = {};
											var j = 1;
											var MailSettings = [];
											if (($scope.BulkModifyBatchDetails[i].paramValue == $scope.BulkModifyBatchDetails[i].NameServerType) || ($scope.BulkModifyBatchDetails[i].NameServerType == "DEFAULT" && $scope.BulkModifyBatchDetails[i].paramValue == 'DEFAULTWITHCOPY')) {
												$scope.DnsNameServerDetails.NameServerType = "Namecheap" + " " + toPascalCase($scope.BulkModifyBatchDetails[i].NameServerType);
												if ($scope.BulkModifyBatchDetails[i].paramValue == 'DEFAULT' || $scope.BulkModifyBatchDetails[i].paramValue == 'DEFAULTWITHCOPY') {
													$scope.DnsNameServerDetails.Records = $scope.BulkModifyBatchDetails[i].DefaultNameServers;
												} else if ($scope.BulkModifyBatchDetails[i].paramValue == 'BACKUP') {
													$scope.DnsNameServerDetails.Records = $scope.BulkModifyBatchDetails[i].BackupNameServers;
												}
											} else if ($scope.BulkModifyBatchDetails[i].param.toUpperCase().startsWith('NS') == true) {
												if ($scope.BulkModifyBatchDetails[i].paramValue.similar($scope.BulkModifyBatchDetails[i].SharedNameServers[i]) == true) {
													$scope.DnsNameServerDetails.NameServerType = "Namecheap Web Hosting DNS";
													$scope.DnsNameServerDetails.Records[recCount] = $scope.BulkModifyBatchDetails[i].paramValue;
													recCount++;
												} else {
													$scope.DnsNameServerDetails.NameServerType = "Custom";
													$scope.DnsNameServerDetails.Records[recCount] = $scope.BulkModifyBatchDetails[i].paramValue;
													recCount++;
												}

											}

											for (var k = 0; k < $scope.BulkModifyBatchDetails.length; k++) {
												$scope.combinedParams[0][count] = $scope.BulkModifyBatchDetails[k].param;
												$scope.combinedParams[1][count] = $scope.BulkModifyBatchDetails[k].paramValue;
												count++;
											}

											for (var l = 0; l < $scope.combinedParams[0].length; l++) {
												var FriendlyName, RecordType, HostName, Address;
												if ($scope.combinedParams[0][l] == "FriendlyName" + j) {
													temp["FriendlyName"] = $scope.combinedParams[1][l];
													FriendlyName = temp["FriendlyName"];
												} else if ($scope.combinedParams[0][l] == "RecordType" + j) {
													temp["RecordType"] = $scope.combinedParams[1][l];
													RecordType = temp["RecordType"];
												} else if ($scope.combinedParams[0][l] == "HostName" + j) {
													temp["HostName"] = $scope.combinedParams[1][l];
													HostName = temp["HostName"];
												} else if ($scope.combinedParams[0][l] == "Address" + j) {
													temp["Address"] = $scope.combinedParams[1][l];
													Address = temp["Address"];
												} else if ($scope.combinedParams[0][l] == "MAIL") {
													if ($scope.combinedParams[1][l] == "NONE" || $scope.combinedParams[1][l] == "1048") {
														MailSettings = "NONE";
													} else if ($scope.combinedParams[1][l] == "1051" || $scope.combinedParams[1][l] == "FWD") {
														MailSettings = "EMAIL FORWARDING";
													} else if ($scope.combinedParams[1][l] == "1054" || $scope.combinedParams[1][l] == "MX") {
														MailSettings = "MX";
													} else if ($scope.combinedParams[1][l] == "1105" || $scope.combinedParams[1][l] == "MXE") {
														MailSettings = "MXE";
													} else if ($scope.combinedParams[1][l] == "OX") {
														MailSettings = "PRIVATE EMAIL";
													}
												} else if ($scope.combinedParams[0][l] == "LEAVE") {
													MailSettings = $scope.combinedParams[0][l];
												}

												if (FriendlyName != undefined && RecordType != undefined && HostName != undefined && Address != undefined) {
													list.push(temp);
													FriendlyName = undefined;
													RecordType = undefined;
													HostName = undefined;
													Address = undefined;
													j++;
													temp = {};
												}
											}


										}
									}
								}

								$scope.DnsHostDetails = { Values: list, Mail: MailSettings };

							}

							var gridData = {};
							gridData.Data = result.Result.BulkModificationDetails;
							$defer.resolve(gridData);
							instance.pageNgGridSettings.parameters.mapping.isLazyLoading = false;
							instance.pageNgGridSettings.parameters.storage.totalServerItemsCount = result.Result.BulkModificationDetails.length;
							instance.asyncStatus(pageHelper.AsyncStatus.Active);
						});
					}
					instance.pageNgGridSettings.settings.reload();
				}
			},
			onSuccess: function(params) {
				var instance = this.instance;
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
			},
			onActive: function(params) {
				var instance = this.instance;
				instance.showLoadPanel = false;
				instance.showContent = true;
			},
			onLoading: function(params) {
				var instance = this.instance;
			},
			onLocked: function(params) {
				var instance = this.instance;
			},
			onError: function(params) {
				var instance = this.instance;
				instance.showLoadPanel = false;
				instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.msg, {
					hasClose: true,
					isAutoHide: true
				});
			}
		});
	}
]);;
app.controller('dashboardinfoctrl', ['$scope', '$rootScope', 'dashboardRepository', '$cookies', '$cookieStore', '$filter', '$modal', '$location', 'notificationService', 'pageHelper', '$timeout', '$attrs', '$window','popupWindow',
function ($scope, $rootScope, dashboardRepository, $cookies, $cookieStore, $filter, $modal, $location, notificationService, pageHelper, $timeout, $attrs, $window, popupWindow) {
    $scope.pageHelper = pageHelper;//for call helpers methods from view
    $scope.pageNotification = new notificationService.instance();
    $scope.alertNotification = new notificationService.instance();
    $scope.BulkModifications = {};
    $scope.UserInformation = {};
    $scope.alertPageFrom = 'dashboard';
    $scope.SymantecSunsetMasterKey = SymantecSunsetMasterKey;
    $scope.SymantecSunsetDate = new Date(SymantecSunsetDate);
    $scope.SymantecSunsetDate = $scope.SymantecSunsetDate.setDate($scope.SymantecSunsetDate.getDate() + 1);
    $scope.currentDate = new Date();
    $scope.SSLInfoRes = SSLInfoRes;
    var ErrorMessage = $scope.SSLInfoRes.static_ErrorMessage_SymantecSunset;
    var InsufficientErrorMessage = $scope.SSLInfoRes.static_InsufficentFundsErrorMsg;
    
    $scope.pageAction = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            var loadingMessage = '';
            var suceessMsg = false;
            instance.Click = function (batchId, status, actionToPerform) {
                if (actionToPerform == 'cancel') {
                    loadingMessage = 'Canceling the bulk action...';
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading, loadingMessage);
                    dashboardRepository.dashboardInfo.BulkModificationCancel(batchId).then(
                        function (result) {
                            if (result.Error == true) {
                                $scope.BulkModifications = {};
                                suceessMsg = false;
                                instance.asyncStatus(pageHelper.AsyncStatus.Error, { msg: result.Msg });
                            }
                            else if (result.Result != null && result.Result.BulkModificationSection != null && result.Result.BulkModificationSection.length > 0) {
                                $scope.BulkModifications = result.Result.BulkModificationSection;
                                $scope.BulkModificationsCount = result.Result.BulkModificationSection[0].TotalBatchCount;
                                suceessMsg = true;
                                instance.asyncStatus(pageHelper.AsyncStatus.Success, { msg: result.Msg });
                            }
                            else {
                                $scope.BulkModificationsCount = 0;
                                suceessMsg = true;
                                instance.asyncStatus(pageHelper.AsyncStatus.Success, { msg: result.Msg });
                            }
                            instance.asyncStatus((suceessMsg == true) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, { Message: result.Msg });
                        });
                }
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            if (params.sender == 'getModel') {
                instance.showContent = true;
                instance.model = params.Result;
                instance.pageNgGridSettings.settings.reload();
            }
            $scope.pageNotification.alerts.clear();
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(params.msg, {
                hasClose: true,
                isAutoHide: true
            });
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onLoading: function (params) {
            var instance = this.instance;
            $scope.pageNotification.alerts.clear();
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('<B>' + params + '</B> Please wait.', false);
            instance.isDisabled = true;
            instance.showError = false;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.msg, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });

    // FUNCTION TO OPEN THE REMOVE ADD ON DOMAIN MODAL POPUP
    $scope.IsCancelMessageModalPopUpOpened = false;
    $scope.openCancelMessageModalPopUp = function (batchId, status, actionToPerform) {
        if (!$scope.IsCancelMessageModalPopUpOpened)
        {
            var activeModalInstance = $modal.open({
                templateUrl: "/Domains/SSL/Common/PromptRemove",
                controller: 'promptRemoveModalCtrl',
                size: 'lg',
                resolve: {
                    modalTitle: function () {
                        return "Cancel Bulk Domain";
                    },
                    modalContent: function () {
                        return "Are you sure want to cancel this batch domain?";
                    }
                }
            });
            activeModalInstance.result.then(function (msg) {
                $scope.IsCancelMessageModalPopUpOpened = false;
                if (msg == 'yes') {
                    $scope.pageAction.Click(batchId, status, actionToPerform);
                }
                //when user click 
            }, function () {
                $scope.IsCancelMessageModalPopUpOpened = false;
                // any result
                activeModalInstance = null;
            });
            activeModalInstance.opened.then(function () {
                $scope.IsCancelMessageModalPopUpOpened = true;
            });
        }

    }

    $scope.openBulkModificationsDetailsPage = function (batchId, paramType) {
        paramType = paramType.replace(/[^a-zA-Z]/g, "").replace(/\s/g, "");
        var sourcePath = 'fromDashboard';
        window.location.href = '/dashboard/BulkModifyDetails/' + batchId + '/' + paramType + '/' + sourcePath + '';
    }

    $scope.pageBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.showLoadPanel = true;
            instance.showContent = false;
            dashboardRepository.dashboardInfo.getBulkModificationsList().then(function (result) {
                if (result.Result != null && result.Result.BulkModificationSection != null && result.Result.BulkModificationSection.length > 0) {
                    $scope.BulkModificationsCount = result.Result.BulkModificationSection[0].TotalBatchCount;
                    $scope.BulkModifications = result.Result.BulkModificationSection;
                }
                else
                    $('div#DomainListGrid').removeClass('add-margin-top-64');
                if (result.Result != null && result.Result.UserInfoModel != null) {
                    $scope.UserInformation = result.Result.UserInfoModel;
                }
                if (result.Result != null && result.Result.DashboardMessages != null) {
                    $scope.DashboardMessages = result.Result.DashboardMessages;
                    for (var i = 0; i < $scope.DashboardMessages.length; i++) {
                        if ($scope.DashboardMessages[i].Key == 'SysMessage' && $scope.DashboardMessages[i].Message_Body != '') {
                            $scope.pageNotification.alerts.addWarning($scope.DashboardMessages[i].Message_Body, {
                                hasClose: true,
                                isAutoHide: false
                            });
                        }
                    }
                }

            });

            instance.asyncStatus(pageHelper.AsyncStatus.Success);

            if ($scope.SymantecSunsetMasterKey == 1 && $scope.currentDate > $scope.SymantecSunsetDate) {
                if ($window.localStorage.length > 0) {
                    var notificationResult = popupWindow.replaceOrRefundResult();

                    if (notificationResult.isError != null) {
                        if ((notificationResult.isError === 'false')) {
                            if (notificationResult.action == 'replace') {
                                var ReplaceSuccessMesage = $scope.SSLInfoRes.static_Replace_SuccessMessage;
                                $scope.pageNotification.stuckNotifications.addSuccess(ReplaceSuccessMesage, {
                                    hasClose: true,
                                    isAutoHide: true
                                });
                            }
                            else {
                                var RefundSuccessMesage = $scope.SSLInfoRes.static_Refund_SuccessMessage;
                                $scope.pageNotification.stuckNotifications.addSuccess(RefundSuccessMesage.replace("{0}", notificationResult.symantecCertType), {
                                    hasClose: true,
                                    isAutoHide: true
                                });
                            }
                        }
                        else {
                            var InsufficientErrorMsg = ((notificationResult.Message).indexOf('INSUFFICIENTFUNDS') > -1) ? 1 : 0;
                            if (InsufficientErrorMsg) {
                                $scope.pageNotification.stuckNotifications.addError(InsufficientErrorMessage.replace("{0}", ServerName), {
                                    hasClose: true,
                                    isAutoHide: false
                                });
                            }
                            else {
                                $scope.pageNotification.stuckNotifications.addError(ErrorMessage, {
                                    hasClose: true,
                                    isAutoHide: true
                                });
                            }
                        }
                    }
                    $window.localStorage.clear();
                }
            }


        },
        onSuccess: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;
        },
        onLoading: function (params) {
            var instance = this.instance;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.msg, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });

}]);;
app.controller('dashboardMessageListCtrl', ['$scope', 'httpRepository', 'pageHelper', 'notificationService', '$filter', 'ncGridParams', '$modal', '$rootScope', '$timeout', 'ncGridEventNames', 'forEachPromice',
function ($scope, httpRepository, pageHelper, notificationService, $filter, ncGridParams, $modal, $rootScope, $timeout, ncGridEventNames, forEachPromice) {
    //#region Local properties
    $scope.pageHelper = pageHelper;//for call helpers methods from view
    $scope.pageNotification = new notificationService.instance();
    //#endregion

    $scope.actionPerforming = "loading";

    $scope.initialize = function (messageModel) {
        $scope.Resource = messageModel.Resources;
        if (messageModel.MessageType != null && messageModel.Message != null) {
            if (messageModel.MessageType. toLowerCase() == "alert")
                $scope.pageNotification.alerts.addWarning(messageModel.Message, {
                    hasClose: true,
                    isAutoHide: false
                });
            else if (messageModel.MessageType.toLowerCase() == "success")
                $scope.pageNotification.alerts.addSuccess(messageModel.Message, {
                    hasClose: true,
                    isAutoHide: false
                });
            else if (messageModel.MessageType.toLowerCase() == "error")
                $scope.pageNotification.alerts.addError(messageModel.Message, {
                    hasClose: true,
                    isAutoHide: false
                });
        }
    }

    $scope.bulkActionHandler = function (actionToPerform) {
        var referenceIds = [];
        var data = $scope.pageBehavior.pageNgGridSettings.parameters.selection.selectedItems;
        var selectedIndex = 0;
        for (i = 0; i < data.length; i++) {
            referenceIds[selectedIndex] = data[i].model.ReferenceId;
            selectedIndex++;
        }
        $scope.pageAction.Click(referenceIds.join(","), actionToPerform, true);
    }

    $scope.uncheckCheckBoxes = function () {
        $scope.pageBehavior.pageNgGridSettings.parameters.selection.selectedItems = [];
        //$('input:checkbox').removeAttr('checked');
        var data = $scope.pageBehavior.pageNgGridSettings.parameters.storage.requestData;
        for (i = 0; i < data.length; i++)
            if (data[i].$ncColumnSelected == true)
                data[i].$ncColumnSelected = false;
        //$('div.dropdown.icon-actions.bulk-actions').hasClass('expanded').removeClass('expanded');
        //$('div#chb_selectAllMessages').find('input[type="checkbox"]).trigger('click');
        $('div#chb_selectAllMessages').find('input[type="checkbox"]').removeAttr('checked');
        //$scope.pageBehavior.pageNgGridSettings.settings.selection.unselectAll();
    }

    $scope.pageAction = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            var loadingMessage = '';
            instance.Click = function (referenceId, actionToPerform, isBulkAction, subject) {
                if (actionToPerform == 'read') {
                    loadingMessage = $scope.Resource.LoadingReadMessage;
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading, loadingMessage);
                    httpRepository.dashboardMessage.readMessage(referenceId, subject).then(
                       function (res) {
                           var result = res.Result;
                           // Show lightbox based on the result
                           if (result.IsSuccess == true) {
                               var modelMessages = $scope.pageBehavior.pageNgGridSettings.parameters.storage.requestData;
                               for (var i = 0; i < modelMessages.length; i++) {
                                   if (modelMessages[i].model.ReferenceId == referenceId) {
                                       modelMessages[i].model.IsRead = true;
                                   }
                               }
                           }
                           instance.asyncStatus(pageHelper.AsyncStatus.Active);
                       });
                } else if (actionToPerform == 'resend') {
                    loadingMessage = $scope.Resource.LoadingResendMessage;
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                    httpRepository.dashboardMessage.resendMessages(referenceId, subject).then(
                        function (res) {
                            var result = res.Result;
                        });
                } else if (actionToPerform == 'markAsRead') {
                    if (isBulkAction == true)
                        loadingMessage = $scope.Resource.LoadingMultipleRead;
                    else
                        loadingMessage = $scope.Resource.LoadingSingleRead;
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading, loadingMessage);
                    httpRepository.dashboardMessage.markMessagesAsRead(referenceId, subject).then(
                        function (res) {
                            var result = res.Result;
                            if (result.ReferenceId != null && result.ReferenceId != typeof (undefined)) {
                                var referenceIds = result.ReferenceId.split(',');
                                if (result.IsSuccess == true) {
                                    var modelMessages = $scope.pageBehavior.pageNgGridSettings.parameters.storage.requestData;
                                    for (var i = 0; i < modelMessages.length; i++) {
                                        if (referenceIds.indexOf(modelMessages[i].model.ReferenceId.toString()) >= 0) {
                                            modelMessages[i].model.IsRead = true;
                                        }
                                    }
                                    if (isBulkAction == true)
                                        $scope.uncheckCheckBoxes();
                                }
                            }
                            instance.asyncStatus((result.IsSuccess == true) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, { Message: result.Message });
                        });
                } else if (actionToPerform == 'markAsUnread') {
                    if (isBulkAction == true)
                        loadingMessage = $scope.Resource.LoadingMultipleUnread;
                    else
                        loadingMessage = $scope.Resource.LoadingSingleUnread;
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading, loadingMessage);
                    httpRepository.dashboardMessage.markMessagesAsUnread(referenceId, subject).then(
                       function (res) {
                           var result = res.Result;
                           if (result.ReferenceId != null && result.ReferenceId != typeof (undefined)) {
                               var referenceIds = result.ReferenceId.split(',');
                               if (result.IsSuccess == true) {
                                   var modelMessages = $scope.pageBehavior.pageNgGridSettings.parameters.storage.requestData;
                                   for (var i = 0; i < modelMessages.length; i++) {
                                       if (referenceIds.indexOf(modelMessages[i].model.ReferenceId.toString()) >= 0) {
                                           modelMessages[i].model.IsRead = false;
                                       }
                                   }
                                   if (isBulkAction == true)
                                       $scope.uncheckCheckBoxes();
                               }
                           }
                           instance.asyncStatus((result.IsSuccess == true) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, { Message: result.Message });
                       });
                } else if (actionToPerform == 'save') {
                    if (isBulkAction == true)
                        loadingMessage = $scope.Resource.LoadingSaveMultiple;
                    else
                        loadingMessage = $scope.Resource.LoadingSaveSingle;
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading, loadingMessage);
                    httpRepository.dashboardMessage.saveMessages(referenceId, subject).then(
                       function (res) {
                           var result = res.Result;
                           if (result.ReferenceId != null && result.ReferenceId != typeof (undefined)) {
                               var referenceIds = result.ReferenceId.split(',');
                               if (result.IsSuccess == true) {
                                   var modelMessages = $scope.pageBehavior.pageNgGridSettings.parameters.storage.requestData;
                                   for (var i = 0; i < modelMessages.length; i++) {
                                       if (referenceIds.indexOf(modelMessages[i].model.ReferenceId.toString()) >= 0) {
                                           modelMessages[i].model.IsSaved = true;
                                       }
                                   }
                                   if (isBulkAction == true)
                                       $scope.uncheckCheckBoxes();
                               }
                           }
                           instance.asyncStatus((result.IsSuccess == true) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, { Message: result.Message });
                       });
                } else if (actionToPerform == 'remove') {
                    if (isBulkAction == true)
                        loadingMessage = $scope.Resource.LoadingRemoveMultiple;
                    else
                        loadingMessage = $scope.Resource.LoadingRemoveSingle;
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading, loadingMessage);
                    httpRepository.dashboardMessage.removeMessages(referenceId, subject).then(
                        function (res) {
                            var result = res.Result;
                            if (result.ReferenceId != null && result.ReferenceId != typeof (undefined)) {
                                var referenceIds = result.ReferenceId.split(',');
                                if (result.IsSuccess == true) {
                                    var modelMessages = $scope.pageBehavior.pageNgGridSettings.parameters.storage.requestData;
                                    for (var i = 0, j = 0; i < modelMessages.length + j && j < referenceIds.length; i++) {
                                        if (referenceIds.indexOf(modelMessages[i - j].model.ReferenceId.toString()) >= 0) {
                                            $scope.pageBehavior.pageNgGridSettings.settings.actions.removeItem(modelMessages[i - j]);
                                            j++;
                                        }
                                    }
                                    if ($scope.pageBehavior.pageNgGridSettings.parameters.storage.pageData.length == 0) {
                                        $scope.pageBehavior.pageNgGridSettings.settings.pagination.setNextPage();
                                        $scope.pageBehavior.pageNgGridSettings.settings.pagination.setPreviousPage();
                                    }
                                    if (isBulkAction == true)
                                        $scope.uncheckCheckBoxes();
                                }
                            }
                            instance.asyncStatus((result.IsSuccess == true) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, { Message: result.Message, sender: 'getModal', Result: $scope.pageBehavior });
                        });
                }
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            if (params.sender == 'getModel') {
                instance.showContent = true;
                instance.model = params.Result;
                instance.pageNgGridSettings.settings.reload();
            }
            $scope.pageNotification.alerts.clear();
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(params.Message, {
                hasClose: true,
                isAutoHide: true
            });
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onLoading: function (params) {
            var instance = this.instance;
            $scope.pageNotification.alerts.clear();
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('<B>' + params + '</B> Please wait.', false);
            instance.isDisabled = true;
            instance.showError = false;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Message, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });

    // FUNCTION TO OPEN THE REMOVE ADD ON DOMAIN MODAL POPUP
    $scope.IsRemoveMessageModalPopUpOpened = false;
    $scope.openRemoveMessageModalPopUp = function (referenceId, isBulk, subject) {
        if (!$scope.IsRemoveMessageModalPopUpOpened)
        {
            var activeModalInstance = $modal.open({
                templateUrl: "/Domains/SSL/Common/PromptRemove",
                controller: 'promptRemoveModalCtrl',
                size: 'lg',
                resolve: {
                    modalTitle: function () {
                        if (isBulk == true)
                            return $scope.Resource.RemoveMultipleTitle;
                        else
                            return $scope.Resource.RemoveSingleTitle;
                    },
                    modalContent: function () {
                        if (isBulk == true)
                            return $scope.Resource.RemoveMultiplePrompt;
                        else
                            return $scope.Resource.RemoveSinglePrompt;
                    }
                }
            });
            activeModalInstance.result.then(function (msg) {
                if (msg == 'yes') {
                    if (isBulk == true)
                        $scope.bulkActionHandler('remove');
                    else
                        $scope.pageAction.Click(referenceId, 'remove', false, subject);
                }
                //when user click 
            }, function () {
                $scope.IsRemoveMessageModalPopUpOpened = false;
                // any result
                activeModalInstance = null;
            });
            activeModalInstance.opened.then(function () {
                $scope.IsRemoveMessageModalPopUpOpened = true;

            });
        }

    }


    $scope.pageBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.showLoadPanel = true;
            instance.showContent = false;
            instance.model = null;
            instance.calendarStartDate = new Date();
            instance.calendarEndDate = new Date();
            instance.StateList = [
             { header: MessagesRes.static_Read, propertyname: "model.IsRead", propertyvalue: true },
             { header: MessagesRes.static_Unread, propertyname: "model.IsRead", propertyvalue: false },
             { header: MessagesRes.static_Saved, propertyname: "model.IsSaved", propertyvalue: true }
            ];
            instance.pageNgGridSettings = new ncGridParams();
            instance.pageNgGridSettings.parameters.search.serchPropertyNames = ['model.Subject', 'model.CreatedDate', 'model.DateDisplay'];
            instance.pageNgGridSettings.settings.getData = function ($defer, ncGridState) {
                httpRepository.dashboardMessage.getMessages(ncGridState).then(function (result) {
                    var message = {};
                    if (result.Result != null && result.Result.Messages != null && result.Result.Messages.length > 0)
                        message.Data = result.Result.Messages;
                    else
                        message.Data = [];
                    instance.pageNgGridSettings.parameters.mapping.serverChunkSize = result.Result.PageSize;
                    if (message.Data.length > 0)
                        instance.pageNgGridSettings.parameters.storage.lastModelId = message.Data[message.Data.length - 1].ReferenceId;
                    var dataLength = (message.Data != null) ? message.Data.length : 0;
                    //for (var i = 0; i < dataLength; i++) {
                    //    message.Data[i].chbId = "chbId" + i;
                    //    message.Data[i] = createGridItemBehavior(message.Data[i], instance);
                    //}
                    if (result.Result.IsGetAllMessages == true)
                        instance.pageNgGridSettings.parameters.mapping.isLazyLoading = false;
                    // Set lazyloading false if received data length is less than chunk size
                    if (message.Data.length < instance.pageNgGridSettings.parameters.mapping.serverChunkSize)
                        instance.pageNgGridSettings.parameters.mapping.isLazyLoading = false;
                    //$defer.resolve(message);
                    forEachPromice(message.Data, function (element, index) {
                        element.chbId = "chbId" + index;
                        return createGridItemBehavior(element, instance);
                    }, 500).then(function (forEachResult) {
                        $defer.resolve({ Data: forEachResult, TotalServerItemsCount: result.Result.TotalMessages });
                    });
                    instance.model = instance.pageNgGridSettings.parameters.storage.requestData;
                });
            }

            instance.pageNgGridSettings.parameters.mapping.serverChunkSize = 200;
            instance.pageNgGridSettings.parameters.mapping.isLazyLoading = true;
            instance.pageNgGridSettings.settings.reload();
            instance.asyncStatus(pageHelper.AsyncStatus.Success);

            instance.pageNgGridSettings.eventListener.then(function (eventScope) {
                //eventScope.$on(ncGridEventNames.ncGridRenderPageBefore, function (event, parameters) {
                //    $scope.actionPerforming = "loading";
                //});
                //eventScope.$on(ncGridEventNames.ncGridRenderPageAfter, function (event, parameters) {
                //    $scope.actionPerforming = "loaded";
                //});

                eventScope.$on(ncGridEventNames.ncGridRenderMoreBefore, function (event, parameters) {
                    $scope.actionPerforming = "loaded";
                });
                eventScope.$on(ncGridEventNames.ncGridRenderMoreAfter, function (event, parameters) {
                    $scope.actionPerforming = "loaded";
                });

                eventScope.$on(ncGridEventNames.ncGridLoadServerChunkBefore, function (event, parameters) {
                    $scope.actionPerforming = "loaded";
                });
                eventScope.$on(ncGridEventNames.ncGridLoadServerChunkAfter, function (event, parameters) {
                    $scope.actionPerforming = "loaded";
                });

                eventScope.$on(ncGridEventNames.ncGridFilterApplyBefore, function (event, parameters) {
                    $scope.actionPerforming = "filter";
                });
                eventScope.$on(ncGridEventNames.ncGridFilterApplyAfter, function (event, parameters) {
                    $scope.actionPerforming = "filter";
                });

                eventScope.$on(ncGridEventNames.ncGridFilterClearBefore, function (event, parameters) {
                    $scope.actionPerforming = "loaded";
                });
                eventScope.$on(ncGridEventNames.ncGridFilterClearAfter, function (event, parameters) {
                    $scope.actionPerforming = "loaded";
                });

                //eventScope.$on(ncGridEventNames.ncGridCategoriesApplyBefore, function (event, parameters) {
                //    $scope.actionPerforming = "loaded";
                //});
                //eventScope.$on(ncGridEventNames.ncGridCategoriesApplyAfter, function (event, parameters) {
                //    $scope.actionPerforming = "loaded";
                //});

                //eventScope.$on(ncGridEventNames.ncGridCategoriesClearBefore, function (event, parameters) {
                //    $scope.actionPerforming = "loaded";
                //});
                //eventScope.$on(ncGridEventNames.ncGridCategoriesClearAfter, function (event, parameters) {
                //    $scope.actionPerforming = "loaded";
                //});

                eventScope.$on(ncGridEventNames.ncGridCalendarApplyBefore, function (event, parameters) {
                    $scope.actionPerforming = "time";
                });
                eventScope.$on(ncGridEventNames.ncGridCalendarApplyAfter, function (event, parameters) {
                    $scope.actionPerforming = "time";
                });

                eventScope.$on(ncGridEventNames.ncGridCalendarResetBefore, function (event, parameters) {
                    $scope.actionPerforming = "loaded";
                });
                eventScope.$on(ncGridEventNames.ncGridCalendarResetAfter, function (event, parameters) {
                    $scope.actionPerforming = "loaded";
                });

                eventScope.$on(ncGridEventNames.ncGridSearchBefore, function (event, parameters) {
                    $scope.actionPerforming = "search";
                });
                eventScope.$on(ncGridEventNames.ncGridSearchAfter, function (event, parameters) {
                    $scope.actionPerforming = "search";
                });

                //eventScope.$on(ncGridEventNames.ncGridChangePageSizeBefore, function (event, parameters) {
                //    $scope.actionPerforming = "loaded";
                //});
                //eventScope.$on(ncGridEventNames.ncGridChangePageSizeAfter, function (event, parameters) {
                //    $scope.actionPerforming = "loaded";
                //});

                //eventScope.$on(ncGridEventNames.ncGridAddItemBefore, function (event, parameters) {
                //    $scope.actionPerforming = "loaded";
                //});
                //eventScope.$on(ncGridEventNames.ncGridAddItemAfter, function (event, parameters) {
                //    $scope.actionPerforming = "loaded";
