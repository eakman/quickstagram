app.directive('numbersOnly', [function ()
{
    return {
        require: 'ngModel',
        link: function (scope, element, attrs, modelCtrl) {
            modelCtrl.$parsers.push(function (inputValue) {
                // this next if is necessary for when using ng-required on your input. 
                // In such cases, when a letter is typed first, this parser will be called
                // again, and the 2nd time, the value will be undefined
                if (inputValue == undefined) return ''
                var transformedInput = inputValue.replace(/[^0-9]/g, '');
                if (transformedInput != inputValue) {
                    modelCtrl.$setViewValue(transformedInput);
                    modelCtrl.$render();
                }

                return transformedInput;
            });
        }
    };
}]);;
app.directive('numbersdotandcommaOnly', [function () {
    return {
        require: 'ngModel',
        link: function (scope, element, attrs, modelCtrl) {
            modelCtrl.$parsers.push(function (inputValue) {
                // this next if is necessary for when using ng-required on your input. 
                // In such cases, when a letter is typed first, this parser will be called
                // again, and the 2nd time, the value will be undefined
                if (inputValue == undefined) return ''
                var transformedInput = inputValue.replace(/[^0-9.,]/g, '');
                if (transformedInput != inputValue) {
                    modelCtrl.$setViewValue(transformedInput);
                    modelCtrl.$render();
                }

                return transformedInput;
            });
        }
    };
}]);
;
app.directive('zipcodeValidation', [function () {
    return {
        require: 'ngModel',
        link: function (scope, element, attrs, modelCtrl) {
            modelCtrl.$parsers.push(function (inputvalue)
            {
                if (inputvalue.trim() != "")
                {
                    var selectedCountry = attrs.selectedCountry.toLowerCase();

                    if (selectedCountry == "us")
                    {
                        nc_postalregx = nc_Val_US_PostalCodeRegex;
                    }

                    else if (selectedCountry == "ca") {
                        nc_postalregx = nc_Val_CA_PostalCodeRegex;
                    }
                    else if (selectedCountry == "gb") {
                        nc_postalregx = nc_Val_GB_PostalCodeRegex;
                    }
                    else if (selectedCountry == "nl") {
                        nc_postalregx = nc_Val_NL_PostalCodeRegex;
                    }
                    else if (selectedCountry == "br") {
                        nc_postalregx = nc_Val_BR_PostalCodeRegex;
                    }
                    else if (selectedCountry == "jp") {
                        nc_postalregx = nc_Val_JP_PostalCodeRegex;
                    }
                    else
                    {
                        nc_postalregx = nc_Val_PostalCodeRegex
                    }
                    if (inputvalue.match(nc_postalregx)) {
                        modelCtrl.$setValidity('invalidzipcode', true)
                        modelCtrl.$render();
                    }
                    else {
                        modelCtrl.$setValidity('invalidzipcode', false)
                        modelCtrl.$render();
                    }
                }

                return inputvalue;
            });
        }
    };
}]);;
app.directive('focusOn', [
    '$timeout', function($timeout) {
        return {
            restrict: 'A',
            link: function($scope, $element, $attr) {
                $scope.$watch($attr.focusOn, function(focusVal) {
                    $timeout(function() {
                        focusVal ? $element.focus() : $element.blur();
                    });
                });
            }
        }
    }
]);

app.directive('focusOnSelect2', ['$timeout', function ($timeout) {
    return {
        restrict: 'A',
        link: function ($scope, $element, $attr) {
            $scope.$watch($attr.focusOnSelect2, function (focusVal) {
                if (focusVal) {
                    $timeout(function () {
                        $element.select2("open");
                    });
                };
            });
        }
    }
}])
app.directive('focusOnTooltip', ['$timeout', function ($timeout) {
    return {
        restrict: 'A',
        link: function ($scope, $element, $attr) {
            $scope.$watch($attr.focusOnTooltip, function (focusVal) {
                if (focusVal) {
                    $timeout(function () {
                        var toogleElement = $element.find('.tooltip-toggle');
                        if (toogleElement) {
                            angular.element(toogleElement).click();
                        }
                    });
                };
            });
        }
    }
}]);
app.directive('infiniteScroll', [
  '$rootScope', '$window', '$timeout', function ($rootScope, $window, $timeout) {
      return {
          link: function (scope, elem, attrs) {
              var checkWhenEnabled, handler, scrollDistance, scrollEnabled;
              $window = angular.element($window);
              scrollDistance = 0;
              if (attrs.infiniteScrollDistance != null) {
                  scope.$watch(attrs.infiniteScrollDistance, function (value) {
                      return scrollDistance = parseInt(value, 10);
                  });
              }
              scrollEnabled = true;
              checkWhenEnabled = false;
              if (attrs.infiniteScrollDisabled != null) {
                  scope.$watch(attrs.infiniteScrollDisabled, function (value) {
                      scrollEnabled = !value;
                      if (scrollEnabled && checkWhenEnabled) {
                          checkWhenEnabled = false;
                          return handler();
                      }
                  });
              }
              handler = function () {
                  var elementBottom, remaining, shouldScroll, windowBottom;
                  windowBottom = $window.height() + $window.scrollTop();
                  elementBottom = elem.offset().top + elem.height();
                  remaining = elementBottom - windowBottom;
                  shouldScroll = remaining <= $window.height() * scrollDistance;
                  if (shouldScroll && scrollEnabled) {
                      if ($rootScope.$$phase) {
                          return scope.$eval(attrs.infiniteScroll);
                      } else {
                          return scope.$apply(attrs.infiniteScroll);
                      }
                  } else if (shouldScroll) {
                      return checkWhenEnabled = true;
                  }
              };
              $window.on('scroll', handler);
              scope.$on('$destroy', function () {
                  return $window.off('scroll', handler);
              });
              return $timeout((function () {
                  if (attrs.infiniteScrollImmediateCheck) {
                      if (scope.$eval(attrs.infiniteScrollImmediateCheck)) {
                          return handler();
                      }
                  } else {
                      return handler();
                  }
              }), 0);
          }
      };
  }
]);;
app.directive('initResponsiveTooltip', ['$compile', '$timeout', '$parse', function ($compile, $timeout, $parse) {
    return {
        restrict: 'A',
        replace: false,
        link: function postLink(scope, elm, attrs, ctrl) {
            var updateTooltip= function() {
                $timeout(function () {
                    var attVal = elm.find('[rel]').attr('rel');
                    if (attVal) {
                        var showedTooltipElement = document.querySelector('[id="' + attVal.replace("toggle", 'tip') + '"]');
                        if (showedTooltipElement) {
                            $compile(angular.element(showedTooltipElement).contents())(scope);
                        }
                    }
                });
            }
            if (attrs.responsiveTooltipSettings) {
                var htmlTooltipGetter = $parse(attrs.responsiveTooltipSettings);
                scope.$watch(htmlTooltipGetter, (function (tooltipSettings) {
                    elm.responsiveTooltip(tooltipSettings);
                    updateTooltip();
                }));
            } else {
                elm.responsiveTooltip();
                updateTooltip();
            }
        }
    };
}]);

app.directive('dynamicResponsiveTooltip', ['$timeout', '$compile', function ($timeout, $compile) {
    return {
        restrict: 'A',
        replace: false,
        scope: {
            tooltipUpdateCondition: '='
        },
        link: function postLink(scope, elm, attrs, ctrl) {

            var update = function () {
                $timeout(function () {
                    var attVal = elm.find('[rel]').attr('rel');
                    if (attVal) {
                        var showedTooltipElement = document.querySelector('[id="' + attVal.replace("toggle", 'tip') + '"]');
                        if (showedTooltipElement) {
                            $compile(angular.element(showedTooltipElement).contents())(scope);
                            $timeout(function () {
                                elm.responsiveTooltip();
                            });
                        }
                    }
                });
            }

            scope.$watch('tooltipUpdateCondition', function (newValue, oldValue) {
                if (newValue != oldValue) {
                    if (newValue == null) {
                        var attVal = elm.find('[rel]').attr('rel');
                        if (attVal) {
                            var showedTooltipElement = document.querySelector('[id="' + attVal.replace("toggle", 'tip') + '"]');
                            showedTooltipElement.remove();
                            return;
                        }
                    } else {
                        elm.responsiveTooltip();
                        update();
                    }
                }
            });
            if (scope.tooltipUpdateCondition != null) {
                $timeout(function () {
                    elm.responsiveTooltip();
                    update();
                });

            }
        }
    };
}]);

app.directive('htmlResponsiveTooltip', ['$timeout', '$compile', '$parse', function ($timeout, $compile, $parse) {
    return {
        restrict: 'A',
        replace: false,
        link: function postLink(scope, elm, attrs, ctrl) {
            var elementTooltipContent = elm.find(".tooltip");
            elm.find(".tooltip").remove();
            var showedTooltipElement = null;
                scope.$on("$destroy", function handleDestroyEvent() {
                    //showedTooltipElement.remove();
                }
            );
            var htmlTooltipGetter = $parse(attrs.htmlResponsiveTooltip);

            var responsiveSetting= {
                name:attrs.responsiveTooltipSetting,
                value:null,
                keys:null
            }
            if (responsiveSetting.name != null && ResponsiveTooltipSetting()[responsiveSetting.name] != null) {
                responsiveSetting.keys = ResponsiveTooltipSetting()[responsiveSetting.name];
            }

            scope.$watch(htmlTooltipGetter, (function (tooltipHtml) {
                if (responsiveSetting.keys != null) {
                    var availableClasses = elm[0].className.replace("responsive-tooltip", "");
                    var classList = availableClasses.split(' ');
                    for (var i = 0; i < classList.length; i++) {
                        if (responsiveSetting.keys[classList[i]] != null) {
                            responsiveSetting.value = responsiveSetting.keys[classList[i]];
                            break;
                        }
                    }
                }
                //var tooltipElement = elm.find('.tooltip');
                //elementTooltipContent.html(tooltipHtml);
                if (tooltipHtml != null) {
                    elementTooltipContent.html(tooltipHtml);
                }
                $timeout(function () {
                    var attVal = null;
                    if (responsiveSetting.value != null) {
                        elm.responsiveTooltip(responsiveSetting.value);
                        if (responsiveSetting.value.tipToggle != null) {
                            var obj = elm;
                            var tipElement = eval(responsiveSetting.value.tipToggle)[0];
                            if (tipElement != null) {
                                attVal = angular.element(tipElement).attr('rel');
                            }
                        }
                    } else {
                        elm.responsiveTooltip();

                    }
                    if (attVal == null) {
                        attVal=elm.find('[rel]').attr('rel');
                    }
                    if (attVal) {
                        showedTooltipElement = document.querySelector('[id="' + attVal.replace("toggle", 'tip') + '"]');
                        if (showedTooltipElement) {
                            angular.element(showedTooltipElement).html(elementTooltipContent);
                            $compile(angular.element(showedTooltipElement).contents())(scope);
                        }
                    }
                }, 0);
            }));

        }
    };
}]);


;
app.directive('ncBindSanitizeHtml', ['$sce', 'sanitizeHtmlService', '$compile', '$parse', function ($sce, sanitizeHtmlService, $compile, $parse) {
	return {
		restrict: 'A',
		link: function (scope, element, attr) {
			scope.$watch($sce.parseAsHtml(attr.ncBindSanitizeHtml), function (value) {
				if (value != null) {
					value = sanitizeHtmlService(value);
				}
				element.html(value || '');
			});
		}
		}
}])
;
app.directive('ncPluralTemplate', ['$compile', '$timeout', 'httpRepository', '$templateCache', function ($compile, $timeout, httpRepository, $templateCache) {
    return {
        require: '^?templateId',
        link: function (scope, element, attributes) {
            scope.$watch(attributes.ncPluralTemplate, function (templateUrl) {
                $templateCache.get(null, templateUrl).then(function () {
                    scope.$watch(attributes.templateId, function (newTemplateIdValue) {
                        if (newTemplateIdValue == null) return;
                        element.html($compile($templateCache.get(newTemplateIdValue))(scope));
                    });
                });
            });
        }
    };
}]);;
app.directive('ncQuicTip', [function () {
    return {
        restrict: 'A',
        replace: false,
        link: function postLink(scope, elm) {
            var quicktip = elm.quicktip();
            scope.$on("$destroy", function () {
                $(elm).mouseleave();
                if ($(quicktip).length != -1) {
                    $(quicktip).mouseleave();
                }
            });
           
        }
    };
}]);;
app.directive('ncScrollToThis', function () {
	/**
	 * Will browser to element, as soon as directive gets compiled
	 */
	return {
		restrict: 'A',
		link: function (scope, element) {
			var offset = $(element).offset();
			var offsetTop = offset.top - 100;
			$('html, body').animate({
				scrollTop: offsetTop
			}, 0);
		}
	}
});
;
(function() {
	app.directive('ncStickyFilters', function() {
		return {
			restrict: 'A',
			link: function(scope, el) {
				var destroyEvents = trackCleanupWindowEvents(['resize', 'scroll'], function() {
					$(el).sticky({
						top: function() {
							return $(this).find('.table-filters').offset().top - 24;
						},
						bottom: function() {
							var table = $(this).parent().find('table');
							return table.offset().top + table.height() - 24 - $(this).find('.table-filters').height();
						}
					});
				});

				scope.$on('$destroy', function() {
					destroyEvents();
				});
			}
		}
	});

	function collectWindowHandlers(evntName) {
		return (jQuery._data(window, 'events')[evntName] || []).map(function(data) {
			return data.handler;
		});
	}

	function trackCleanupWindowEvents(eventNames, cb) {
		var eventsBefore = {};
		eventNames.forEach(function(event) {
			eventsBefore[event] = collectWindowHandlers(event);
		});

		cb();

		eventNames.forEach(function(event) {
		});

		var eventsToClear = {};
		eventNames.forEach(function(event) {
			var after = collectWindowHandlers(event);
			var before = eventsBefore[event];
			eventsToClear[event] = after.filter(function(handler) {
				return before.indexOf(handler) < 0;
			});
		});

		return function destroy() {
			for (var key in eventsToClear) if (eventsToClear.hasOwnProperty(key)) {
				eventsToClear[key].forEach(function(handler) {
					$(window).off(key, handler);
				});
			}
		}
	}
})();;
(function () {
    var tooltipNamespace = '.ncTooltip';
	var mouseenter = 'mouseenter' + tooltipNamespace;

	function getInstance(element) {
		return element.data('tooltip');
	}

	function initTooltip(tooltipElement, tooltipParams) {
		try {
			tooltipElement.responsiveTooltip(tooltipParams);
		} finally {
			tooltipElement.off(mouseenter); // lazy initialization, tooltip initialization should be called just once
			tooltipElement.find('.tooltip-toggle').trigger('mouseenter');
		}
	}

	app.directive('ncTooltip', [
		'ncTooltipSettings',
		function (tooltipSettings) {
		    return {
		        restrict: 'EA',
		        replace: true,
		        scope: {},
		        link: function (scope, elm) {
			        elm.on(mouseenter, function () {
						initTooltip(elm, tooltipSettings);
		            });

			        scope.$on('$destroy', function() {
				        var tooltipInstance = getInstance(elm);
				        tooltipInstance && tooltipInstance.destroy();
			            elm.off(tooltipNamespace);
			        });
		        }
		    }
		}
    ]);
})();
;
app.constant('ncTooltipSettings', {
    align: 'center',
    width: '999999',
    extraclass: 'dl-tip'
});;
app.directive('focusOn',['$timeout', function ($timeout) {
    return {
        restrict : 'A',
        link : function($scope,$element,$attr) {
            $scope.$watch($attr.focusOn,function(focusVal) {
                $timeout(function() {
                    focusVal ? $element.focus() :$element.blur();
                });
            });
        }
    }
}]);
/*
 use example 
<nm-progress percent="someValue"></nm-progress>
 */
app.directive('nmProgress', [function () {
    return {
        restrict: 'AE',
        template: '<progress class="progress active" data-ng-value="progressPercent" max="100" data-ng-class="getClass()"></progress>',
        replace: true,
        scope: {
            percent: '='
        },
        link: function postLink(scope, elm, attrs, ctrl) {
            scope.getClass = function () {
                var percentRound = Math.round(scope.percent);
                if (scope.percent == null || isNaN(scope.percent))
                {
                    return 0
                }
                scope.progressPercent = scope.percent;

                if (percentRound > 80 && percentRound <= 95) {
                    return 'alert';
                }
                else if (percentRound > 95) {
                    return 'danger';
                }
                return '';
            }

        }
    };
}]);

;
/*
 use example 
 <notification-Holder link="fooLinkToNotificationService"></notification-Holder>
 */
app.directive('notificationHolder', ['notificationService', function (notificationService) {
    return {
        restrict: 'AE',
        template: '<div> ' +
                    '<div class="notificationContainer magicmessages" data-ng-class="{\'has-content\':link.stuckNotifications.items.length>0}" >' +
                        '<div class="magicmessages-panel">'+	
                            '<div class="magicmessages-wrapper" ng-class="getNotificationHtmlType(notification.type)"  ng-repeat="notification in link.stuckNotifications.items" >' +
                                '<a href="" ng-click="notification.destroy()" ng-show="notification.hasClose" class="magicmessages-close">Close</a>' +
                                '<notification-msg-text value="notification" ismagicmessage="true" id="notification.notificationId"></<notification-msg-text>' +
	                        '</div>'+
                        '</div>' +
                    '</div>' +
                    '<div class="site-msg  has-close" data-ng-class="getAlertHtmlType(alert.type)" ng-repeat="alert in link.alerts.items">' +
                        '<a href="" class="close" ng-show="alert.hasClose" ng-click="alert.destroy()">Close</a>' +
                        '<notification-msg-text value="alert" ismagicmessage="false" id="$index"></<notification-msg-text>' +
                    '</div>' +
                '</div>',
        replace: true,
        transclude: true,
        scope: {
            link: '='
        },
        link: function postLink(scope, elm, attrs, ctrl) {
            var notificationInstance = new notificationService.instance();
            scope.getAlertHtmlType = function (type) {
                if (type == notificationInstance.type.success) {
                    return "success";
                }
                else if (type == notificationInstance.type.warning) {
                    return "alert";
                }
                return "error";
            }

            scope.getNotificationHtmlType = function(type) {
                if (type == notificationInstance.type.success) {
                    return "success";
                } else if (type == notificationInstance.type.warning) {
                    return "alert";
                } else if (type == notificationInstance.type.loading) {
                    return "loading";
                }
                return "error";
            };

        }
    };
}]);

app.directive('notificationMsgText', ['$parse', '$sce', '$compile','sanitizeHtmlService', function ($parse, $sce, $compile,sanitizeHtmlService) {
    return {
        restrict:'E',
        replace: true,
        scope: true,
        template: "<p></p>",
        link: function postLink(scope, element, attrs, ctrl) {
        	var msgParamsGetter = $parse(attrs.value);
        	var msgIdGetter = $parse(attrs.id);
	        var isStuckNotification = true;
          var isMagicMessageParamsGetter = $parse(attrs.ismagicmessage);
            scope.$watch(isMagicMessageParamsGetter, (function (arguments) {
	               isStuckNotification = arguments;
                if (arguments === true)
                {
                    element[0].className +=' magicmessages-content';
                }
            }));

            scope.$watch(msgIdGetter, (function (argument) {
            	element[0].setAttribute("id", argument);
            }));

            scope.$watch(msgParamsGetter, (function (arguments) {
            	if (arguments.msg != null) {
            		arguments.msg = arguments.msg.replace(/\n/g, '<br/>');
            		element.append(arguments.msg);
            		$compile(element.contents())(arguments.senderScope || scope);
            	}
            }));
        }
    };
}]);


;
app.directive('selfCleaningNgInit', [ function () {
	return {
		priority: 450,
		compile: function() {
			return {
				pre: function(scope, element, attrs) {
					scope.$eval(attrs.selfCleaningNgInit);
					element.removeAttr('self-cleaning-ng-init');
				}
			};
		}
	}
}]);
app.directive('domainServicesTooltip', ['tooltipService', function (tooltipService) {
	return {
		restrict: 'E',
		replace: true,
		scope: {
			services: '=',
			domainBlock: '=',
			onServiceAction: '=',
			isFromExpiringList: '='
		},
		link: function postLink(scope, elm) {
			var disableclass = "";
			// this code regarding for blocked domains add disabled class only and add one more scope variable domainblock
			if (scope.domainBlock && scope.services.ProductTypeString != "DOMAIN" && scope.services.ProductTypeString != "FREEDNS") {
				disableclass = "disabled";
			}


			var template = "<div class='tooltip " + disableclass + "'>" +
				"<ul class='app-status'>" +
					"<li ng-repeat='statusType in services.Status track by $index'>" +
						"<strong data-ng-if='$index==0' class='ellipsis' data-ng-bind-html='statusType'></strong>" +
						"<span data-ng-if='$index!=0' data-ng-bind-html='statusType'></span>" +
					"</li>" +
				"</ul>" +
				"<ul class='app-actions' >" +
					"<li ng-repeat='action in services.Actions track by $index'>" +
						"<a href='' data-ng-if='$index==0' data-ng-click='onServiceAction((isFromExpiringList)? services : action)' class='highlight " + disableclass + "' data-ng-bind='action.DisplayText'></a>" +
						"<a href='' data-ng-if='$index!=0' data-ng-click='onServiceAction((isFromExpiringList)? services : action)' class='" + disableclass + "' data-ng-bind='action.DisplayText'></a>" +
					"</li>" +
				"</ul>" +
				"</div>";

			tooltipService.renderOnDemand(angular.element(template), scope, elm);
		}
	};
}]);
;
