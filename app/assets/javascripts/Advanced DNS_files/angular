			bulkDnsSetDomainDnsHost: function(domainList, optionSelected, dnsServerConfiguration, hostRecords, mailSettings, isEmailNotifyEnabled) {
				var postMailSettingsValue = {};
				postMailSettingsValue.MailSettingType = mailSettings.MailSettingType;
				postMailSettingsValue.MailsettingRecords = [];
				if (mailSettings.MailsettingRecords != undefined) {
					for (indexValue = 0; indexValue < mailSettings.MailsettingRecords.length; indexValue++) {
						var mailRecords = {};
						mailRecords.RecordName = mailSettings.MailsettingRecords[indexValue].RecordName;
						mailRecords.HostName = mailSettings.MailsettingRecords[indexValue].HostName.toLowerCase();
						if (mailSettings.MailsettingRecords[indexValue].MailServer != undefined)
							mailRecords.MailServer = mailSettings.MailsettingRecords[indexValue].MailServer.toLowerCase();
						mailRecords.Priority = mailSettings.MailsettingRecords[indexValue].Priority;
						mailRecords.TTL = mailSettings.MailsettingRecords[indexValue].TTL;
						mailRecords.Target = mailSettings.MailsettingRecords[indexValue].Target;
						postMailSettingsValue.MailsettingRecords.push(mailRecords);
					}
				}


				var jsonObject = JSON.stringify(mailSettings)
				return httpService.Post('/Domains/domainlist/bulksetdnshostsubmit', { domainList: domainList, optionSelected: optionSelected, dnsServerConfiguration: dnsServerConfiguration, hostRecords: hostRecords, mailSettings: postMailSettingsValue, isEmailNotifyEnabled: isEmailNotifyEnabled });
			}
		};

