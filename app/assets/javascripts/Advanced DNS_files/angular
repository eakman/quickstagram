    //Registrant
    $scope.$watch('regcontact.PhoneCode', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.ctrlfrmreg.frmdomainregistrantcontacts != undefined && $scope.ctrlfrmreg.frmdomainregistrantcontacts.PhoneCode != undefined) {
                if (newValue == "" && $scope.regcontact.RegistrantPhone != '')
                    $scope.ctrlfrmreg.frmdomainregistrantcontacts.PhoneCode.$setValidity('regContactPhoneCodeRequired', false);
                else
                    $scope.ctrlfrmreg.frmdomainregistrantcontacts.PhoneCode.$setValidity('regContactPhoneCodeRequired', true);
            }
        }
    });

    $scope.$watch('regcontact.FaxExt', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.ctrlfrmreg.frmdomainregistrantcontacts != undefined && $scope.ctrlfrmreg.frmdomainregistrantcontacts.FaxExt != undefined) {
                if (newValue == "" && ($scope.regcontact.FaxNumber != ''))
                    $scope.ctrlfrmreg.frmdomainregistrantcontacts.FaxExt.$setValidity('regContactFaxCodeRequired', false);
                else
                    $scope.ctrlfrmreg.frmdomainregistrantcontacts.FaxExt.$setValidity('regContactFaxCodeRequired', true);
            }
        }
    });

    $scope.$watch('regcontact.Country', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.ctrlfrmreg.frmdomainregistrantcontacts != undefined && $scope.ctrlfrmreg.frmdomainregistrantcontacts.RegistrantContactCountry != undefined) {
                $scope.ctrlfrmreg.frmdomainregistrantcontacts.RegistrantContactCountry.$setValidity('regContactCountryrequired', true);
                if (newValue == "") {
                    $scope.ctrlfrmreg.frmdomainregistrantcontacts.RegistrantContactCountry.$setValidity('regContactCountryrequired', false);
                    $scope.ctrlfrmreg.frmdomainregistrantcontacts.ZIPPostalCode.$setValidity('invalidzipcode', true)
                    $scope.ctrlfrmreg.frmdomainregistrantcontacts.StateProvince.$setValidity('invalidstate', true);
                }
                else {

                    var zipValidationResult = $scope.ZipCodeValidation(newValue, $scope.regcontact.PostalCode);
                    if (zipValidationResult)
                        $scope.ctrlfrmreg.frmdomainregistrantcontacts.ZIPPostalCode.$setValidity('invalidzipcode', true)
                    else {
                        $scope.ctrlfrmreg.frmdomainregistrantcontacts.ZIPPostalCode.$setValidity('invalidzipcode', false)                        
                    }


                    if ($scope.regcontact.StateProvince != '') {
                        $scope.regcontact.StateProvince = $scope.GetStateCode($scope.ctrlfrmreg.frmdomainregistrantcontacts.StateProvince, newValue, $scope.regcontact.StateProvince);
                    }

                }
            }
        }
    });

    //Admin
    $scope.$watch('admcontact.PhoneCode', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.ctrladmin.frmdomainadmincontacts != undefined && $scope.ctrladmin.frmdomainadmincontacts.PhoneCode != undefined) {
                if (newValue == "" && $scope.admcontact.PhoneNumber != '')
                    $scope.ctrladmin.frmdomainadmincontacts.PhoneCode.$setValidity('admContactPhoneCodeRequired', false);
                else
                    $scope.ctrladmin.frmdomainadmincontacts.PhoneCode.$setValidity('admContactPhoneCodeRequired', true);
            }
        }
    });

    $scope.$watch('admcontact.FaxExt', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.ctrladmin.frmdomainadmincontacts != undefined && $scope.ctrladmin.frmdomainadmincontacts.FaxExt != undefined) {
                if (newValue == "" && ($scope.admcontact.FaxNumber != ''))
                    $scope.ctrladmin.frmdomainadmincontacts.FaxExt.$setValidity('admContactFaxCodeRequired', false);
                else
                    $scope.ctrladmin.frmdomainadmincontacts.FaxExt.$setValidity('admContactFaxCodeRequired', true);
            }
        }
    });

    $scope.$watch('admcontact.Country', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.ctrladmin.frmdomainadmincontacts != undefined && $scope.ctrladmin.frmdomainadmincontacts.AdminContactCountry != undefined) {
                $scope.ctrladmin.frmdomainadmincontacts.AdminContactCountry.$setValidity('admContactCountryrequired', true);
                if (newValue == "") {
                    $scope.ctrladmin.frmdomainadmincontacts.AdminContactCountry.$setValidity('admContactCountryrequired', false);
                    $scope.ctrladmin.frmdomainadmincontacts.ZIPPostalCode.$setValidity('invalidzipcode', true)
                    $scope.ctrladmin.frmdomainadmincontacts.StateProvince.$setValidity('invalidstate', true);
                }
                else {

                    var zipValidationResult = $scope.ZipCodeValidation(newValue, $scope.admcontact.PostalCode);
                    if (zipValidationResult)
                        $scope.ctrladmin.frmdomainadmincontacts.ZIPPostalCode.$setValidity('invalidzipcode', true)
                    else {
                        $scope.ctrladmin.frmdomainadmincontacts.ZIPPostalCode.$setValidity('invalidzipcode', false)                        
                    }


                    if ($scope.admcontact.StateProvince != '') {
                        $scope.admcontact.StateProvince = $scope.GetStateCode($scope.ctrladmin.frmdomainadmincontacts.StateProvince, newValue, $scope.admcontact.StateProvince);
                    }

                }
            }
        }
    });


    //Tech
    $scope.$watch('teccontact.PhoneCode', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.ctrlfrmtechnical.frmdomaintechnicalcontacts != undefined && $scope.ctrlfrmtechnical.frmdomaintechnicalcontacts.PhoneCode != undefined) {
                if (newValue == "" && $scope.teccontact.PhoneNumber != '')
                    $scope.ctrlfrmtechnical.frmdomaintechnicalcontacts.PhoneCode.$setValidity('tecContactPhoneCodeRequired', false);
                else
                    $scope.ctrlfrmtechnical.frmdomaintechnicalcontacts.PhoneCode.$setValidity('tecContactPhoneCodeRequired', true);
            }
        }
    });

    $scope.$watch('teccontact.FaxExt', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.ctrlfrmtechnical.frmdomaintechnicalcontacts != undefined && $scope.ctrlfrmtechnical.frmdomaintechnicalcontacts.FaxExt != undefined) {
                if (newValue == "" && ($scope.teccontact.FaxNumber != ''))
                    $scope.ctrlfrmtechnical.frmdomaintechnicalcontacts.FaxExt.$setValidity('tecContactFaxCodeRequired', false);
                else
                    $scope.ctrlfrmtechnical.frmdomaintechnicalcontacts.FaxExt.$setValidity('tecContactFaxCodeRequired', true);
            }
        }
    });

    $scope.$watch('teccontact.Country', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.ctrlfrmtechnical.frmdomaintechnicalcontacts != undefined && $scope.ctrlfrmtechnical.frmdomaintechnicalcontacts.TechContactCountry != undefined) {
                $scope.ctrlfrmtechnical.frmdomaintechnicalcontacts.TechContactCountry.$setValidity('tecContactCountryrequired', true);
                if (newValue == "") {
                    $scope.ctrlfrmtechnical.frmdomaintechnicalcontacts.TechContactCountry.$setValidity('tecContactCountryrequired', false);
                    $scope.ctrlfrmtechnical.frmdomaintechnicalcontacts.ZIPPostalCode.$setValidity('invalidzipcode', true)
                    $scope.ctrlfrmtechnical.frmdomaintechnicalcontacts.StateProvince.$setValidity('invalidstate', true);
                }
                else {

                    var zipValidationResult = $scope.ZipCodeValidation(newValue, $scope.teccontact.PostalCode);
                    if (zipValidationResult)
                        $scope.ctrlfrmtechnical.frmdomaintechnicalcontacts.ZIPPostalCode.$setValidity('invalidzipcode', true)
                    else {
                        $scope.ctrlfrmtechnical.frmdomaintechnicalcontacts.ZIPPostalCode.$setValidity('invalidzipcode', false)                        
                    }


                    if ($scope.teccontact.StateProvince != '') {
                        $scope.teccontact.StateProvince = $scope.GetStateCode($scope.ctrlfrmtechnical.frmdomaintechnicalcontacts.StateProvince, newValue, $scope.teccontact.StateProvince);
                    }

                }
            }
        }
    });

    //Billing
    $scope.$watch('billcontact.PhoneCode', function (newValue, oldValue) {
