        checkGeolocation: checkGeolocation,
        getLocation: function(){
            return checkGeolocation(fillAddressComponents, fillAddressComponents);
        },
        getCountryAndCity: function () {
            var countryAndCityDefer = $q.defer();

            this.getLocation().then(function (result) {
                if (result.Error) {
                    countryAndCityDefer.resolve(result);
                }
                else {
                    countryAndCityDefer.resolve({ location: result.country.long_name + " " + result.locality.long_name || result.administrative_area_level_1.long_name });
                }

            })
            return countryAndCityDefer.promise;
        }
        
    };
}]);
