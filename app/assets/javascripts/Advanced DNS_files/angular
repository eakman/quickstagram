                            //        //this is the object you are looking for
                            //        city = results[0].address_components[i];
                            //        break;
                            //    }
                            //}
                        }
                        //city data
                        //alert(city.short_name + " " + city.long_name)
                        defer.resolve(resultAddressComponent);
                    } else {
                        resultAddressComponent.Error = "No results found";
                        defer.resolve(resultAddressComponent);
                    }
                } else {
                    resultAddressComponent.Error = "Geocoder failed due to: " + status;
                    defer.resolve(resultAddressComponent);
                }
            });
        }
        else {
            resultAddressComponent.Error = position.message;
            defer.resolve(resultAddressComponent);
        }
       
    }

