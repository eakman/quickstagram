    $scope.IsAdminCountryRequired = false;
    $scope.IsCallbackCountryRequired = false;




    // This code will be removed after some days. This is for removal of EV SSL SGC certificate from all areas
    //--Begin--
    function modalResult(result, obj) {

        if (result) {            
            $.magnificPopup.close();
        } else {
            // Logic to find the page from where it calls
            $scope.UrlSplits = $location.absUrl().split('/');
            $scope.domainName = $scope.UrlSplits[$scope.UrlSplits.length - 2];
            $scope.pageFrom = $scope.UrlSplits[$scope.UrlSplits.length - 1];
            if ($scope.UrlSplits[$scope.UrlSplits.length - 1] == "") {
                $scope.domainName = $scope.UrlSplits[$scope.UrlSplits.length - 3]
                $scope.pageFrom = $scope.UrlSplits[$scope.UrlSplits.length - 2]
            }
            // Redirecting the page from where it is initiated
            if ($scope.pageFrom.toUpperCase() == 'DOMAINLIST')
                window.location.href = "/domains/domainlist/";
            else if ($scope.pageFrom.toUpperCase() == 'PRODUCTLIST')
                window.location.href = '/ProductList/SslCertificates';
            else if ($scope.pageFrom.toUpperCase() == 'DASHBOARD')
                window.location.href = '/dashboard';
            else //If none of the condition matches redirecting to domainlist by default
                window.location.href = "/domains/domainlist/";           
        }
    }
    //--End--

    //USE COMPANY CONTACTS FOR THE CALLBACK CONTACTS IF THE CHECKBOX CHECKED
    $scope.UseCompanyContactsForCallBack = function (blValue) {
        var ddlCallBackCountry = $('select#callBackContactsCountry');
        if (blValue) {
            $scope.CallBackContacts.CompanyName = $scope.AddressList.CompanyName
            $scope.CallBackContacts.Department = $scope.AddressList.Department
            $scope.CallBackContacts.Address = $scope.AddressList.Address
            $scope.CallBackContacts.Address2 = $scope.AddressList.Address1
            $scope.CallBackContacts.POBox = $scope.AddressList.POBox
            $scope.CallBackContacts.City = $scope.AddressList.City
            $scope.CallBackContacts.StateProvince = $scope.AddressList.StateProvince
            $scope.CallBackContacts.ZIPPostalCode = $scope.AddressList.ZIPPostalCode
            $scope.CallBackContacts.Country = $scope.AddressList.Country
            ddlCallBackCountry.select2("val", $scope.AddressList.Country)
        }
        else {
            $scope.CallBackContacts.CompanyName = '';
            $scope.CallBackContacts.Department = '';
            $scope.CallBackContacts.Address = '';
            $scope.CallBackContacts.Address2 = '';
            $scope.CallBackContacts.POBox = '';
            $scope.CallBackContacts.City = '';
            $scope.CallBackContacts.StateProvince = '';
            $scope.CallBackContacts.ZIPPostalCode = '';
            $scope.CallBackContacts.Country = '';
            ddlCallBackCountry.select2("val", '')
        }
    }

    // FUNCTION TO OPEN THE EDIT ADD ON DOMAIN MODAL POPUP
    $scope.IsChooseContactModalPopUpOpened = false;
    $scope.openChooseContactModalPopUp = function (requestFrom) {

        if (!$scope.IsChooseContactModalPopUpOpened) {
            var modalInstance = $modal.open({
                //templateUrl: "/Domains/SSL/ChooseContact/id="+id,
                templateUrl: "/Domains/SSL/ChooseContact/",
                controller: 'sslChooseContactModalCtrl',
                size: 'lg',
                backdrop: 'static',
            });
            modalInstance.result.then(function (model) {
                $scope.IsChooseContactModalPopUpOpened = false;
                if (model != '') {
                    if (requestFrom == 'Admin') {
                        $scope.AdminContacts.FirstName = model.FirstName;
                        $scope.AdminContacts.LastName = model.LastName;
                        $scope.AdminContacts.CompanyName = model.Organization;
                        $scope.AdminContacts.JobTitle = model.JobTitle;
                        $scope.AdminContacts.Address = model.Address1;
                        $scope.AdminContacts.Address1 = model.Address2;
                        $scope.AdminContacts.City = model.City;
                        $scope.AdminContacts.StateProvince = model.StateProvince;
                        $scope.AdminContacts.ZIPPostalCode = model.PostalCode;
                        var ddlCountryAdminMax = $('form[name="frmAdminContacts"] select#AdminContactsCountry');
                        if (ddlCountryAdminMax.length) {
                            ddlCountryAdminMax.select2("val", model.Country)
                            $scope.AdminContacts.Country = model.Country;
                        }
                        if (model.Phone.indexOf('.') != -1) {

                            $scope.AdminContacts.PhoneNumber = model.Phone.split('.')[1];
                        }
                        $scope.AdminContacts.PhoneNumberExt = model.PhoneExt;
                        if (model.Fax.indexOf('.') != -1) {

                            $scope.AdminContacts.FaxNumber = model.Fax.split('.')[1];
                        }
                        if (model.PhoneExt != '') {
                            $scope.AdminContacts.PhoneExtCheckBox = true;
                            if ($("#PhSectionMax").length)
                                $("#PhSectionMax").addClass("has-extension");
                            if ($("#PhSectionMin").length)
                                $("#PhSectionMin").addClass("has-extension");
                        }
                        $scope.AdminContacts.EmailAddress = model.EmailAddress;

                        var ddlPhoneCodeAdminMax = $('form[name="frmAdminContacts"] select#PhoneCode');
                        if (ddlPhoneCodeAdminMax.length) {
                            if (model.Phone.indexOf('.') != -1) {

                                ddlPhoneCodeAdminMax.select2("val", model.Phone.split('.')[0].replace(/\+/g, ""))
                                $scope.AdminContacts.PhoneCode = model.Phone.split('.')[0].replace(/\+/g, "");
                            }
                        }
                        var ddlFaxCodeAdminMax = $('form[name="frmAdminContacts"] select#FaxCode');
                        if (ddlFaxCodeAdminMax.length) {
                            if (model.Fax.indexOf('.') != -1) {

                                ddlFaxCodeAdminMax.select2("val", model.Fax.split('.')[0].replace(/\+/g, ""))
                                $scope.AdminContacts.FaxCode = model.Fax.split('.')[0].replace(/\+/g, "");
                            }
                        }
                    }

                    if (requestFrom == 'Tech') {
                        $scope.TechContacts.FirstName = model.FirstName;
                        $scope.TechContacts.LastName = model.LastName;
                        $scope.TechContacts.CompanyName = model.Organization;
                        $scope.TechContacts.JobTitle = model.JobTitle;
                        $scope.TechContacts.Address = model.Address1;
                        $scope.TechContacts.Address1 = model.Address2;
                        $scope.TechContacts.City = model.City;
                        $scope.TechContacts.StateProvince = model.StateProvince;
                        $scope.TechContacts.ZIPPostalCode = model.PostalCode;
                        var ddlCountryTechMax = $('form[name="frmTechContacts"] select#TechContactsCountry');
                        if (ddlCountryTechMax.length) {
                            ddlCountryTechMax.select2("val", model.Country)
                            $scope.TechContacts.Country = model.Country;
                        }
                        if (model.Phone.indexOf('.') != -1) {

                            $scope.TechContacts.PhoneNumber = model.Phone.split('.')[1];
                        }
                        $scope.TechContacts.PhoneNumberExt = model.PhoneExt;
                        if (model.Fax.indexOf('.') != -1) {

                            $scope.TechContacts.FaxNumber = model.Fax.split('.')[1];
                        }
                        if (model.PhoneExt != '') {
                            $scope.TechContacts.PhoneExtCheckBox = true;
                            if ($("#PhSectionTechnical").length)
                                $("#PhSectionTechnical").addClass("has-extension");
                            if ($("#PhSectionTechMin").length)
                                $("#PhSectionTechMin").addClass("has-extension");
                        }
                        $scope.TechContacts.EmailAddress = model.EmailAddress;

                        var ddlPhoneCodeTechMax = $('form[name="frmTechContacts"] select#PhoneCode');
                        if (ddlPhoneCodeTechMax.length) {
                            if (model.Phone.indexOf('.') != -1) {

                                ddlPhoneCodeTechMax.select2("val", model.Phone.split('.')[0].replace(/\+/g, ""))
                                $scope.TechContacts.PhoneCode = model.Phone.split('.')[0].replace(/\+/g, "");
                            }
                        }
                        var ddlFaxCodeTechMax = $('form[name="frmTechContacts"] select#FaxCode');
                        if (ddlFaxCodeTechMax.length) {
                            if (model.Fax.indexOf('.') != -1) {

                                ddlFaxCodeTechMax.select2("val", model.Fax.split('.')[0].replace(/\+/g, ""))
                                $scope.TechContacts.FaxCode = model.Fax.split('.')[0].replace(/\+/g, "");
                            }
                        }
                    }



                    if (requestFrom == 'Geotrust' || requestFrom == 'Comodo' || requestFrom == 'ReissueComodoFields') {
                        $scope.AddressList.CompanyName = model.Organization;
                        $scope.AddressList.CityOfIncorporation = model.City;
                        $scope.AddressList.StateprovinceofIncorporation = model.StateProvince;
                        var ddlCountryGeotrustMax = $('form[name="frmCompanyContacts"] select#addressListCountry');
                        if (ddlCountryGeotrustMax.length) {
                            ddlCountryGeotrustMax.select2("val", model.Country);
                            $scope.AddressList.Country = model.Country;
                        }
                        $scope.AddressList.Address = model.Address1;
                        $scope.AddressList.Address1 = model.Address2;
                        $scope.AddressList.City = model.City;
                        $scope.AddressList.StateProvince = model.StateProvince;
                        $scope.AddressList.ZIPPostalCode = model.PostalCode;
                        if (model.Phone.indexOf('.') != -1) {

                            $scope.AddressList.PhoneNumber = model.Phone.split('.')[1];
                        }
                        $scope.AddressList.PhoneNumberExt = model.PhoneExt;
                        if (model.Fax.indexOf('.') != -1) {

                            $scope.AddressList.FaxNumber = model.Fax.split('.')[1];
                        }
                        if (model.PhoneExt != '') {
                            $scope.AddressList.PhoneExtCheckBox = true;
                            if ($("#PhSectionGeotrust").length)

                                $("#PhSectionGeotrust").addClass("has-extension");
                        }
                        var ddlPhoneCodeGeotrustMax = $('form[name="frmCompanyContacts"] select#PhoneCode');
                        if (ddlPhoneCodeGeotrustMax.length) {
                            if (model.Phone.indexOf('.') != -1) {

                                ddlPhoneCodeGeotrustMax.select2("val", model.Phone.split('.')[0].replace(/\+/g, ""))
                                $scope.AddressList.PhoneCode = model.Phone.split('.')[0].replace(/\+/g, "");
                            }
                        }
                        var ddlFaxCodeGeotrustMax = $('form[name="frmCompanyContacts"] select#FaxCode');
                        if (ddlFaxCodeGeotrustMax.length) {
                            if (model.Fax.indexOf('.') != -1) {

                                ddlFaxCodeGeotrustMax.select2("val", model.Fax.split('.')[0].replace(/\+/g, ""))
                                $scope.AddressList.FaxCode = model.Fax.split('.')[0].replace(/\+/g, "");
                            }
                        }
                        var ddlCountryMax = $('form[name="CompanyContacts"] select#addressCountry');
                        if (ddlCountryMax.length) {

                            ddlCountryMax.select2("val", model.Country)
                            $scope.AddressList.Country = model.Country;
                        }
                    }

                    if (requestFrom == 'Callback') {
                        $scope.CallBackContacts.FirstName = model.FirstName;
                        $scope.CallBackContacts.LastName = model.LastName;
                        $scope.CallBackContacts.JobTitle = model.JobTitle;
                        if (model.Phone.indexOf('.') != -1) {

                            $scope.CallBackContacts.Phone = model.Phone.split('.')[1];
                        }
                        $scope.CallBackContacts.PhoneExt = model.PhoneExt;
                        if (model.PhoneExt != '') {
                            $scope.AddressList.CallBackPhoneExtCheckBox = true;
                            if ($("#PhSectionCallback").length)

                                $("#PhSectionCallback").addClass("has-extension");
                        }
                        if (model.Fax.indexOf('.') != -1) {

                            $scope.CallBackContacts.Fax = model.Fax.split('.')[1];
                        }
                        $scope.CallBackContacts.EmailAddress = model.EmailAddress;
                        $scope.CallBackContacts.CompanyName = model.Organization;
                        $scope.CallBackContacts.Address = model.Address1;
                        $scope.CallBackContacts.Address1 = model.Address2;
                        $scope.CallBackContacts.City = model.City;
                        $scope.CallBackContacts.StateProvince = model.StateProvince;
                        $scope.CallBackContacts.ZIPPostalCode = model.PostalCode;
                        var ddlCountryCallbackMax = $('form[name="frmCallBackContact"] select#callBackContactsCountry');
                        if (ddlCountryCallbackMax.length) {

                            ddlCountryCallbackMax.select2("val", model.Country)
                            $scope.CallBackContacts.Country = model.Country;
                        }
                        var ddlPhoneCodeCallbackMax = $('form[name="frmCallBackContact"] select#CallBackPhoneCode');
                        if (ddlPhoneCodeCallbackMax.length) {
                            if (model.Phone.indexOf('.') != -1) {

                                ddlPhoneCodeCallbackMax.select2("val", model.Phone.split('.')[0].replace(/\+/g, ""))
                                $scope.CallBackContacts.PhoneCode = model.Phone.split('.')[0].replace(/\+/g, "");
                            }
                        }
                        var ddlFaxCodeCallbackMax = $('form[name="frmCallBackContact"] select#CallBackFaxCode');
                        if (ddlFaxCodeCallbackMax.length) {
                            if (model.Fax.indexOf('.') != -1) {

                                ddlFaxCodeCallbackMax.select2("val", model.Fax.split('.')[0].replace(/\+/g, ""))
                                $scope.CallBackContacts.FaxCode = model.Fax.split('.')[0].replace(/\+/g, "");
                            }
                        }

                    }
                }
            });

            modalInstance.opened.then(function () {
                $scope.IsChooseContactModalPopUpOpened = true;
            });
        }


    }


    $scope.addonDcvMethodDisabled = false;
    $scope.domainstovalidateviaemail = [];
    $scope.domainstovalidateviahttp = [];
    $scope.domainstovalidateviadns = [];


    $scope.addondomainsEmail = [];
    $scope.NextButtonClicked = false;
    $scope.ErrorMsgRes = ErrorMessageRes;

    $scope.SSLInfoValidation = SSLInfoValidation;
    $scope.sslnotification = new notificationService.instance();
    $scope.httpDCValidation = "false";
    $scope.dnsDCValidation = "false";
    $scope.WebServer = $scope.SSLInfoRes.static_SelectOption;

    $scope.getTimes = function (n) {
        return new Array(n);
    };
    $scope.$watch('WebServer', function (newVal, oldVal) {
        $scope.SelectedWebServer = $('#ddlWebServer option:selected').text();
        if (newVal != $scope.SSLInfoRes.static_SelectOption) {
            $scope.sslactivate.ddlWebServer.$setValidity('webserverRequired', true)
        }
    }, true);

    $scope.$watch('AdminContacts.EmailAddress', function (newVal, oldVal) {

        if (newVal != oldVal) {
            if (nc_Val_EmailPattern.test(newVal)) {
                //var emailRegex='\b[A-Z0-9._%+-]+@[A-Z0-9.-]+\.[A-Z]{2,4}\b'

                if ($scope.ValidateTLD(newVal)) {

                    $scope.frmAdminContacts.AdminEmail.$setValidity('AdminEmailRequired', true)
                }
                else {
                    $scope.frmAdminContacts.AdminEmail.$setValidity('AdminEmailRequired', false)
                }
            }
            else {
                $scope.frmAdminContacts.AdminEmail.$setValidity('AdminEmailRequired', false)

            }
        }
    }, true);


    $scope.$watch('CallBackContacts.EmailAddress', function (newVal, oldVal) {

        if (newVal != oldVal) {
            if (nc_Val_EmailPattern.test(newVal)) {
                if ($scope.ValidateTLD(newVal)) {
                    $scope.frmCallBackContact.CallBackEmailAddress.$setValidity('CallBackEmailRequired', true)
                }
                else {
                    $scope.frmCallBackContact.CallBackEmailAddress.$setValidity('CallBackEmailRequired', false)
                }
            }
            else {
                $scope.frmCallBackContact.CallBackEmailAddress.$setValidity('CallBackEmailRequired', false)

            }
        }
    }, true);


    $scope.$watch('TechContacts.EmailAddress', function (newVal, oldVal) {

        if (newVal != oldVal) {
            if (nc_Val_EmailPattern.test(newVal)) {
                if ($scope.ValidateTLD(newVal)) {
                    $scope.frmTechContacts.TechEmail.$setValidity('TechEmailRequired', true)
                }
                else {
                    $scope.frmTechContacts.TechEmail.$setValidity('TechEmailRequired', false)
                }
            }
            else {
                $scope.frmTechContacts.TechEmail.$setValidity('TechEmailRequired', false)

            }
        }
    }, true);




    $scope.$watch('wizardstep', function (newValue, oldValue) {
        if (newValue !== oldValue) {

            if ($scope.SSLInfoSectionViewModel.IsDCVStepRequired) {
                if (newValue == 1) {
                    $scope.ButtonName = $scope.SSLInfoRes.static_ButtonSubmit;// "Submit";

                }
                else if (newValue > 1 && newValue < 5) {
                    $scope.ButtonName = $scope.SSLInfoRes.static_ButtonNext;// "Next";
                }
                else {
                    $scope.ButtonName = $scope.SSLInfoRes.static_ButtonConfirm; //"Confirm";
                }
            }
            else {
                if (newValue == 1) {
                    $scope.ButtonName = $scope.SSLInfoRes.static_ButtonSubmit;// "Submit";
                }
                else if (newValue > 1 && newValue < 4) {
                    $scope.ButtonName = $scope.SSLInfoRes.static_ButtonNext;// "Next";
                }
                else {
                    $scope.ButtonName = $scope.SSLInfoRes.static_ButtonConfirm;// "Confirm";
                }
            }
        }
    });
    $scope.$watch('SSLInfoSectionViewModel.CSRCode', function (newValue, oldValue) {
        if (newValue !== oldValue) {

            $scope.NextButtonClicked = false;
            if (newValue == "" || newValue == undefined || newValue == null || newValue == NaN)
                $scope.SSLInfoSectionViewModel.PrimaryDomainDetail.CommonName = "";
        }
    });
    $scope.$watch('AddressList.CountryofIncorporation', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if (newValue == "" && $scope.SSLInfoSectionViewModel.Status == 'ACTIVE' || (newValue == "" && $scope.SSLInfoSectionViewModel.ProviderName == 'COMODO' && $scope.GetValidationType($scope.SSLInfoSectionViewModel.ValidationType) == 'Extended')) {
                $scope.frmCompanyContacts.addressListCountryOfIncorporation.$setValidity('countryOfIncorpRequired', false);
            }
            else {
                $scope.frmCompanyContacts.addressListCountryOfIncorporation.$setValidity('countryOfIncorpRequired', true);
                if ($scope.AddressList.StateprovinceofIncorporation != '') {
                    $scope.AddressList.StateprovinceofIncorporation = $scope.GetStateCode($scope.frmCompanyContacts.StateprovinceofIncorporation, newValue, $scope.AddressList.StateprovinceofIncorporation);
                }
            }

        }

    });

    $scope.$watch('AddressList.Country', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.frmCompanyContacts != undefined && $scope.frmCompanyContacts.addressListCountry != undefined) {
                $scope.frmCompanyContacts.addressListCountry.$setValidity('countryRequired', true);
                if (newValue == "") {
                    if (($scope.SSLInfoSectionViewModel.ProviderName.toUpperCase() == 'GEOTRUST' && ($scope.GetValidationType($scope.SSLInfoSectionViewModel.ValidationType) == 'Domain')) ||
                        ($scope.SSLInfoSectionViewModel.ProviderName.toUpperCase() == 'THAWTE' && ($scope.GetValidationType($scope.SSLInfoSectionViewModel.ValidationType) == 'Domain'))
                        ) {
                        $scope.frmCompanyContacts.addressListCountry.$setValidity('countryRequired', true);
                    }
                    else {
                        $scope.frmCompanyContacts.addressListCountry.$setValidity('countryRequired', false);
                    }

                    $scope.frmCompanyContacts.ZIPPostalCode.$setValidity('invalidzipcode', true)
                    $scope.frmCompanyContacts.StateProvince.$setValidity('invalidstate', true);
                }
                else {

                    var zipValidationResult = $scope.ZipCodeValidation(newValue, $scope.AddressList.ZIPPostalCode);
                    if (zipValidationResult)
                        $scope.frmCompanyContacts.ZIPPostalCode.$setValidity('invalidzipcode', true)
                    else
                        $scope.frmCompanyContacts.ZIPPostalCode.$setValidity('invalidzipcode', false)


                    if ($scope.AddressList.StateProvince != '') {
                        $scope.AddressList.StateProvince = $scope.GetStateCode($scope.frmCompanyContacts.StateProvince, newValue, $scope.AddressList.StateProvince);
                    }

                }
            }



        }

    });

    $scope.$watch('AddressList.ZIPPostalCode', function (newValue, oldValue) {
        if (newValue != oldValue && newValue != '') {
            var zipValidationResult = $scope.ZipCodeValidation($scope.AddressList.Country, newValue);
            if (zipValidationResult)
                $scope.frmCompanyContacts.ZIPPostalCode.$setValidity('invalidzipcode', true)
            else
                $scope.frmCompanyContacts.ZIPPostalCode.$setValidity('invalidzipcode', false)
        }
    })
    $scope.$watch('AddressList.DateofIncorporation', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if (newValue != "") {
                if (new Date(newValue) == 'Invalid Date') {
                    $scope.frmCompanyContacts.DateofIncorporation.$setValidity('invalidDateOfIncorp', false);
                }
                else {
                    $scope.frmCompanyContacts.DateofIncorporation.$setValidity('invalidDateOfIncorp', true);
                }

            }
            else {
                $scope.frmCompanyContacts.DateofIncorporation.$setValidity('invalidDateOfIncorp', true);
            }

        }

    });


    $scope.$watch('AdminContacts.Country', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.frmAdminContacts != undefined && $scope.frmAdminContacts.AdminContactsCountry != undefined) {
                $scope.frmAdminContacts.AdminContactsCountry.$setValidity('adminCountryRequired', true);
                if (newValue == "") {
                    $scope.frmAdminContacts.AdminContactsCountry.$setValidity('adminCountryRequired', false);
                    $scope.frmAdminContacts.ZIPPostalCode.$setValidity('invalidzipcode', true)
                    $scope.frmAdminContacts.StateProvince.$setValidity('invalidstate', true);
                }
                else {

                    var zipValidationResult = $scope.ZipCodeValidation(newValue, $scope.AdminContacts.ZIPPostalCode);
                    if (zipValidationResult)
                        $scope.frmAdminContacts.ZIPPostalCode.$setValidity('invalidzipcode', true)
                    else
                        $scope.frmAdminContacts.ZIPPostalCode.$setValidity('invalidzipcode', false)


                    if ($scope.AdminContacts.StateProvince != '') {
                        $scope.AdminContacts.StateProvince = $scope.GetStateCode($scope.frmAdminContacts.StateProvince, newValue, $scope.AdminContacts.StateProvince);
                    }

                }
            }



        }

    });
    $scope.$watch('TechContacts.Country', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.frmTechContacts != undefined && $scope.frmTechContacts.TechContactsCountry != undefined) {
                $scope.frmTechContacts.TechContactsCountry.$setValidity('techCountryRequired', true);
                if (newValue == "") {
                    $scope.frmTechContacts.TechContactsCountry.$setValidity('techCountryRequired', false);
                    $scope.frmTechContacts.ZIPPostalCode.$setValidity('invalidzipcode', true)
                    $scope.frmTechContacts.StateProvince.$setValidity('invalidstate', true);
                }
                else {

                    var zipValidationResult = $scope.ZipCodeValidation(newValue, $scope.TechContacts.ZIPPostalCode);
                    if (zipValidationResult)
                        $scope.frmTechContacts.ZIPPostalCode.$setValidity('invalidzipcode', true)
                    else
                        $scope.frmTechContacts.ZIPPostalCode.$setValidity('invalidzipcode', false)


                    if ($scope.TechContacts.StateProvince != '') {
                        $scope.TechContacts.StateProvince = $scope.GetStateCode($scope.frmTechContacts.StateProvince, newValue, $scope.TechContacts.StateProvince);
                    }

                }
            }


        }

    });
    $scope.$watch('CallBackContacts.Country', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.frmCallBackContact != undefined && $scope.frmCallBackContact.callBackContactsCountry != undefined) {
                $scope.frmCallBackContact.callBackContactsCountry.$setValidity('callbackCountryRequired', true);
                if (newValue == "") {
                    $scope.frmCallBackContact.callBackContactsCountry.$setValidity('callbackCountryRequired', false);
                    $scope.frmCallBackContact.ZIPPostalCode.$setValidity('invalidzipcode', true);
                    $scope.frmCallBackContact.StateProvince.$setValidity('invalidstate', true);
                }
                else {

                    var zipValidationResult = $scope.ZipCodeValidation(newValue, $scope.CallBackContacts.ZIPPostalCode);
                    if (zipValidationResult)
                        $scope.frmCallBackContact.ZIPPostalCode.$setValidity('invalidzipcode', true)
                    else
                        $scope.frmCallBackContact.ZIPPostalCode.$setValidity('invalidzipcode', false)


                    if ($scope.CallBackContacts.StateProvince != '') {
                        var stateProvinceVal = $scope.GetStateCode($scope.frmCallBackContact.StateProvince, newValue, $scope.CallBackContacts.StateProvince)
                        $scope.CallBackContacts.StateProvince = stateProvinceVal;
                    }

                }
            }


        }

    });
    $scope.$watch('CallBackContacts.PhoneCode', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            {
                if ($scope.frmCallBackContact != undefined && $scope.frmCallBackContact.CallBackPhoneCode != undefined) {
                    if (newValue == "")
                        $scope.frmCallBackContact.CallBackPhoneCode.$setValidity('callbackPhoneCodeRequired', false);
                    else
                        $scope.frmCallBackContact.CallBackPhoneCode.$setValidity('callbackPhoneCodeRequired', true);
                }
            }

        }

    });

    $scope.$watch('CallBackContacts.FaxCode', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            {
                if ($scope.frmCallBackContact != undefined && $scope.frmCallBackContact.CallBackFaxCode != undefined) {
                    if (newValue == "")
                        $scope.frmCallBackContact.CallBackFaxCode.$setValidity('callbackFaxCodeRequired', false);
                    else
                        $scope.frmCallBackContact.CallBackFaxCode.$setValidity('callbackFaxCodeRequired', true);
                }
            }

        }

    });
    $scope.$watch('AddressList.PhoneCode', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.frmCompanyContacts != undefined && $scope.frmCompanyContacts.PhoneCode != undefined) {
                $scope.frmCompanyContacts.PhoneCode.$setValidity('companyPhoneCodeRequired', true);
                if (newValue == "" && $scope.AddressList.PhoneNumber != '') {
                    $scope.frmCompanyContacts.PhoneCode.$setValidity('companyPhoneCodeRequired', false);
                }

            }


        }

    });
    $scope.$watch('AdminContacts.PhoneCode', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.frmAdminContacts != undefined && $scope.frmAdminContacts.PhoneCode != undefined) {
                if (newValue == "" && $scope.AdminContacts.PhoneNumber != '')
                    $scope.frmAdminContacts.PhoneCode.$setValidity('adminPhoneCodeRequired', false);
                else
                    $scope.frmAdminContacts.PhoneCode.$setValidity('adminPhoneCodeRequired', true);
            }

        }

    });
    $scope.$watch('TechContacts.PhoneCode', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.frmTechContacts != undefined && $scope.frmTechContacts.PhoneCode != undefined) {
                if (newValue == "" && $scope.TechContacts.PhoneNumber != '')
                    $scope.frmTechContacts.PhoneCode.$setValidity('techPhoneCodeRequired', false);
                else
                    $scope.frmTechContacts.PhoneCode.$setValidity('techPhoneCodeRequired', true);
            }

        }

    });


    $scope.$watch('AddressList.FaxCode', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.frmCompanyContacts != undefined && $scope.frmCompanyContacts.FaxCode != undefined) {
                if (newValue == "" && ($scope.AddressList.FaxNumber != '' && $scope.AddressList.FaxNumber != undefined))
                    $scope.frmCompanyContacts.FaxCode.$setValidity('companyFaxCodeRequired', false);
                else
                    $scope.frmCompanyContacts.FaxCode.$setValidity('companyFaxCodeRequired', true);

            }

        }

    });
    $scope.$watch('AdminContacts.FaxCode', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.frmAdminContacts != undefined && $scope.frmAdminContacts.FaxCode != undefined) {
                if (newValue == "" && ($scope.AdminContacts.FaxNumber != '' && $scope.AdminContacts.FaxNumber != undefined))
                    $scope.frmAdminContacts.FaxCode.$setValidity('adminFaxCodeRequired', false);
                else
                    $scope.frmAdminContacts.FaxCode.$setValidity('adminFaxCodeRequired', true);
            }

        }

    });
    $scope.$watch('TechContacts.FaxCode', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.frmTechContacts != undefined && $scope.frmTechContacts.FaxCode != undefined) {
                if (newValue == "" && ($scope.TechContacts.FaxNumber != '' && $scope.TechContacts.FaxNumber != undefined))
                    $scope.frmTechContacts.FaxCode.$setValidity('techFaxCodeRequired', false);
                else
                    $scope.frmTechContacts.FaxCode.$setValidity('techFaxCodeRequired', true);
            }

        }

    });
    $scope.$watch('CallBackContacts.CallBackMethod', function (newValue, oldValue) {
        if (newValue != oldValue) {
            if (newValue != '') {
                $scope.frmCallBackContact.ddlCallBackMethod.$setValidity('invalidCallBackMethod', true)
            }
        }
    })

    $scope.CompanyCountryOfIncorporationChangeEvent = function () {
        $scope.IsCountryOfIncorporationRequired = true;


    }

    $scope.CompanyCountryChangeEvent = function () {
        if ($scope.SSLInfoSectionViewModel.Status == 'ACTIVE')
            $scope.IsCountryRequired = true;

    }
    $scope.CallbackCountryChangeEvent = function () {
        $scope.IsCallbackCountryRequired = true;

    }
    $scope.AdminCountryChangeEvent = function () {
        $scope.IsAdminCountryRequired = true;
    }

    $scope.ZipCodeValidation = function (selectedCountry, zipCodeValue) {
        var returnValue = true;
        if (zipCodeValue != '') {
            var selectedCountry = selectedCountry.toLowerCase();
            var nc_postalregx = '';
            if (selectedCountry == "us") {
                nc_postalregx = nc_Val_US_PostalCodeRegex;
            }

            else if (selectedCountry == "ca") {
                nc_postalregx = nc_Val_CA_PostalCodeRegex;
            }
            else if (selectedCountry == "gb") {
                nc_postalregx = nc_Val_GB_PostalCodeRegex;
            }
            else if (selectedCountry == "nl") {
                nc_postalregx = nc_Val_NL_PostalCodeRegex;
            }
            else if (selectedCountry == "br") {
                nc_postalregx = nc_Val_BR_PostalCodeRegex;
            }
            else if (selectedCountry == "jp") {
                nc_postalregx = nc_Val_JP_PostalCodeRegex;
            }
            else {
                nc_postalregx = nc_Val_PostalCodeRegex
            }
            if (zipCodeValue.match(nc_postalregx)) {
                returnValue = true;
            }
            else {
                returnValue = false;
            }
        }
        return returnValue;


    }
    $scope.AddonIndexChange = 0;
    $scope.GetStateCode = function (modelCtrl, selectedCountry, statevalue) {
        var countries = {
            //"IN": {
            //    // http://www.geopostcodes.com/India
            //    "states": {
            //        "TN": ["TN", "Tamilnadu"],
            //        "AP": ["AP", "Andrapradesh", "Andra"]
