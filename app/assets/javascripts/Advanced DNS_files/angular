    });

    $scope.$watch('billcontact.Country', function (newValue, oldValue) {
        if (newValue !== oldValue) {
            if ($scope.ctrlfrmbilling.frmdomainbillingcontacts != undefined && $scope.ctrlfrmbilling.frmdomainbillingcontacts.BillingContactCountry != undefined) {
                $scope.ctrlfrmbilling.frmdomainbillingcontacts.BillingContactCountry.$setValidity('billingContactCountryrequired', true);
                if (newValue == "") {
                    $scope.ctrlfrmbilling.frmdomainbillingcontacts.BillingContactCountry.$setValidity('billingContactCountryrequired', false);
                    $scope.ctrlfrmbilling.frmdomainbillingcontacts.ZIPPostalCode.$setValidity('invalidzipcode', true)
                    $scope.ctrlfrmbilling.frmdomainbillingcontacts.StateProvince.$setValidity('invalidstate', true);
                }
                else {

                    var zipValidationResult = $scope.ZipCodeValidation(newValue, $scope.billcontact.PostalCode);
                    if (zipValidationResult)
                        $scope.ctrlfrmbilling.frmdomainbillingcontacts.ZIPPostalCode.$setValidity('invalidzipcode', true)
                    else {
                        $scope.ctrlfrmbilling.frmdomainbillingcontacts.ZIPPostalCode.$setValidity('invalidzipcode', false)                     
                    }


                    if ($scope.billcontact.StateProvince != '') {
                        $scope.billcontact.StateProvince = $scope.GetStateCode($scope.ctrlfrmbilling.frmdomainbillingcontacts.StateProvince, newValue, $scope.billcontact.StateProvince);
                    }

                }
            }
        }
    });

    $scope.ZipCodeValidation = function (selectedCountry, zipCodeValue) {
        var selectedCountry = selectedCountry.toLowerCase();
        var nc_postalregx = '';
        if (selectedCountry == "us") {
            nc_postalregx = nc_Val_US_PostalCodeRegex;
        }

        else if (selectedCountry == "ca") {
            nc_postalregx = nc_Val_CA_PostalCodeRegex;
        }
        else if (selectedCountry == "gb") {
            nc_postalregx = nc_Val_GB_PostalCodeRegex;
        }
        else if (selectedCountry == "nl") {
            nc_postalregx = nc_Val_NL_PostalCodeRegex;
        }
        else if (selectedCountry == "br") {
            nc_postalregx = nc_Val_BR_PostalCodeRegex;
        }
        else if (selectedCountry == "jp") {
            nc_postalregx = nc_Val_JP_PostalCodeRegex;
        }
        else {
            nc_postalregx = nc_Val_PostalCodeRegex
        }
        if (zipCodeValue.match(nc_postalregx)) {
            return true;
        }
        else {
            return false;
        }
    }


    $scope.GetStateCode = function (modelCtrl, selectedCountry, statevalue) {
        var countries = {
            //"IN": {
            //    // http://www.geopostcodes.com/India
            //    "states": {
            //        "TN": ["TN", "Tamilnadu"],
            //        "AP": ["AP", "Andrapradesh", "Andra"]
            //    }
            //},
            "US": {
                // http://www.geopostcodes.com/USA
                "states": {
                    "AL": ["AL", "Alabama"],
                    "AK": ["AK", "Alaska"],
                    "AZ": ["AZ", "Arizona"],
                    "AR": ["AR", "Arkansas"],
                    "CA": ["CA", "California"],
                    "CO": ["CO", "Colorado"],
                    "CT": ["CT", "Connecticut"],
                    "DE": ["DE", "Delaware"],
                    "FL": ["FL", "Florida"],
                    "GA": ["GA", "Georgia"],
                    "HI": ["HI", "Hawaii"],
                    "ID": ["ID", "Idaho"],
                    "IL": ["IL", "Illinois"],
                    "IN": ["IN", "Indiana"],
                    "IA": ["IA", "Iowa"],
                    "KS": ["KS", "Kansas"],
                    "KY": ["KY", "Kentucky"],
                    "LA": ["LA", "Louisiana"],
                    "ME": ["ME", "Maine"],
                    "MD": ["MD", "Maryland"],
                    "MA": ["MA", "Massachetts"],
                    "MI": ["MI", "Michigan"],
                    "MN": ["MN", "Minnesota"],
                    "MS": ["MS", "Mississippi"],
                    "MO": ["MO", "Missouri"],
                    "MT": ["MT", "Montana"],
                    "NE": ["NE", "Nebraska"],
                    "NV": ["NV", "Nevada"],
                    "NH": ["NH", "New Hampshire"],
                    "NJ": ["NJ", "New Jersey"],
                    "NM": ["NM", "New Mexico"],
                    "NY": ["NY", "New York"],
                    "NC": ["NC", "North Carolina"],
                    "ND": ["ND", "North Dakota"],
                    "OH": ["OH", "Ohio"],
                    "OK": ["OK", "Oklahoma"],
                    "OR": ["OR", "Oregon"],
                    "PA": ["PA", "Pennsylvania"],
                    "RI": ["RI", "Rhode Island"],
                    "SC": ["SC", "South Carolina"],
                    "SD": ["SD", "South Dakota"],
                    "TN": ["TN", "Tennessee"],
                    "TX": ["TX", "Texas"],
                    "UT": ["UT", "Utah"],
                    "VT": ["VT", "Vermont"],
                    "VA": ["VA", "Virginia"],
                    "WA": ["WA", "Washington"],
                    "WV": ["WV", "West Virginia"],
                    "WI": ["WI", "Wisconsin"],
                    "WY": ["WY", "Wyoming"],
                    "DC": ["DC", "Washington, D.C", "Washington D.C", "Washington DC", "Washington, DC"],
                    "AS": ["AS", "American Samoa"],
                    "UM": ["UM", "Minor Outlying Islands"],
                    "MP": ["MP", "Northern Mariana Islands"],
                    "PR": ["PR", "Puerto Rico"],
                    "VI": ["VI", "Virgin Islands"],
                    "GU": ["GU", "Guam"],
                    "FM": ["FM", "Federated States of Micronesia"],
                    "MH": ["MH", "Marshall Islands"],
                    "PW": ["PW", "Palau"],
                    "AE": ["AE", "Armed Forces Europe"],
                    "AP": ["AP", "Armed Forces Pacific"],
                    "AA": ["AA", "Armed Forces Americas"]


                }
            },
            "CA": {
                // http://www.geopostcodes.com/Canada
                "states": {
                    "AB": ["AB", "Alberta"],
                    "BC": ["BC", "British Columbia"],
                    "MB": ["MB", "Manitoba"],
                    "NB": ["NB", "New Brunswick"],
                    "NL": ["NL", "Newfoundland & Labrador"],
                    "NS": ["NS", "Nova Scotia"],
                    "ON": ["ON", "Ontario"],
                    "PE": ["PE", "Prince Edward Island"],
                    "QC": ["QC", "Quebec"],
                    "SK": ["SK", "Saskatchewan"],
                    "NT": ["NT", "Northwest Territories"],
                    "NU": ["NU", "Nunavut"],
                    "YT": ["YT", "Yukon"]
                }
            }
        };

        var selectedCountry = selectedCountry;
        var _country = countries[selectedCountry]
        if (_country != null) {
            validateState = true;
            var states = _country.states
            var currentState = "";
            var state = states[statevalue];
            for (var s in states) {
                for (var t in states[s]) {
                    if (t != "sortOn") {
                        currentState = states[s][t].replace(/[^a-zA-Z0-9]/g, '').toLowerCase()
                        if (statevalue.toLowerCase() === currentState) {
                            modelCtrl.$setValidity('invalidstate', true)
                            modelCtrl.$setViewValue(s);
                            modelCtrl.$render();
                            return s;
                        }

                    }


                }
            }
            modelCtrl.$setValidity('invalidstate', false)
            modelCtrl.$setViewValue(statevalue);
            modelCtrl.$render();
            return statevalue;

        }
        else {
            modelCtrl.$setValidity('invalidstate', true)
            //modelCtrl.$setViewValue(inputvalue);
            //modelCtrl.$render();
            return statevalue;
        }
    }
    //Call Webmethod to save single contacts to their respected list   


    $scope.savecontactdetails = function () {
        var isformValid = $scope.ctrlfrmcontactedit.frmdomaineditcontacts.$valid;
        var viewModel = $scope.DomainContactsSingleViewModel
        if (isformValid) {
            //Convert data to json
            viewModel.ContactDetails = $scope.dmncontact;
            viewModel.UpdateRegistrantContact = $scope.copyApply.isRegistrant;
            viewModel.UpdateAdminContact = $scope.copyApply.isAdmin;
            viewModel.UpdateTechnicalContact = $scope.copyApply.isTec;
            viewModel.UpdateBillingContact = $scope.copyApply.isBill;

            httpRepository.domainInfo.updateSingleContact(JSON.stringify(viewModel)).then(function (result) {
                var jsonRes = result;
                window.location.href = '/Domains/DomainList';
            });
            //viewModel. = $scope.copyApply.isRegistrant

            //Call Webmethod to save 

        }
        else {
            $('#errorDisplayParentDivSingle').show();
        }
    }
    $scope.SaveClick = function () {


        var isformValid = $scope.ctrlfrmextended.frmExtendedAttribute.$valid;
        if (isformValid) {
            var viewModel = $scope.DomainContactsViewModel;

            var ExtendedAttributeList = $scope.ExtendedAttribute;
            viewModel.ExtendedAttributeList = $scope.ExtendedAttribute;
            httpRepository.domainInfo.updateContact(JSON.stringify(viewModel), JSON.stringify(ExtendedAttributeList)).then(function (result) {
                var jsonRes = result;
                if (result.Error) {
                    // alert(result.Msg);
                    $('div.site-msg.has-close.error.alert').show();
                    $scope.errormessage = result.Msg;
                }
                //else
                //    alert('success');

                var jsonRes = result;
                if (jsonRes.isRedirect) {
                    window.location.href = jsonRes.redirectUrl;
                }
                else {                    
                    $('div.site-msg.has-close.error.alert').show();
                    $scope.errormessage = jsonRes.Msg;
                    $scope.ctrlfrmbilling.frmdomainbillingcontacts.$invalid = true;
                    return;
                }

            });
        }

        //return false;
    }


}]);;
app.controller('domainAppsCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'ncGridEventNames','popupWindow','sslRepository','$window',
function ($scope, $rootScope, httpRepository, $filter, $modal, notificationService, pageHelper, $q, ncGridParams, $sce, ncGridEventNames, popupWindow, sslRepository, $window) {
    //#region Local properties
    $scope.CMSWebAddToCartURL = '';
    $scope.LoginToWebMailUrl = '';
    $scope.SiteServerNameUrl = '';
    $scope.DomainInfoRes = DomainInfoRes;
    $scope.SSLInfoRes = SSLInfoRes;
    $scope.SymantecSunsetMasterKey = SymantecSunsetMasterKey;
    $scope.SymantecSunsetDate = new Date(SymantecSunsetDate);
    $scope.SymantecSunsetDate = $scope.SymantecSunsetDate.setDate($scope.SymantecSunsetDate.getDate() + 1);
    $scope.currentDate = new Date();
    $scope.ServerName = ServerName;
    var ErrorMessage = $scope.SSLInfoRes.static_ErrorMessage_SymantecSunset;
    var InsufficientErrorMessage = $scope.SSLInfoRes.static_InsufficentFundsErrorMsg;

    this.initialize = function (domainName, cmsWebAddToCartUrl, loginToWebMailUrl, siteServerNameUrl, symantecSunsetDateWithFormat) {
        $scope.CMSWebAddToCartURL = cmsWebAddToCartUrl;
        $scope.LoginToWebMailUrl = loginToWebMailUrl;
        $scope.SiteServerNameUrl = siteServerNameUrl;
        $scope.SymantecSunsetDateWithFormat = symantecSunsetDateWithFormat;


        if (domainName != "") {

            $scope.pageBehavior = new pageHelper.AsyncStateBehavior({
                constructor: function () {
                    var instance = this.instance;

                    instance.showLoadPanel = true;
                    instance.showContent = false;

                    instance.model = null;

                    instance.pageNgGridSettings = new ncGridParams();
                    instance.pageNgGridSettings.parameters.search.serchPropertyNames = ['ProductTypeString', 'Name', 'ExpirationDate', 'ProductStatusString'];

                    instance.pageNgGridSettings.settings.getData = function ($defer, ncGridState) {
                        instance.filterStatusPropertyNames = [];
                        instance.filterFlagsPropertyNames = [];
                        httpRepository.domainAppsDetails.getDomainAppsDetails(domainName).then(function (result) {

                            var dataLength = 0;
                            if (result.Result != null && result.Result.Data != null) {
                                if (result.Msg != '') {
                                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(result.Msg, {
                                        hasClose: true,
                                        isAutoHide: true
                                    });
                                }
                                for (index = 0; index < result.Result.Data.length; index++) {
                                    if (result.Result.Data[index].ProductTypeString == null || result.Result.Data[0].ProductTypeString == "DOMAIN") {
                                        result.Result.Data.splice(index, 1)
                                    }
                                }
                                result.Result.Data = $scope.AssignCssClassForFields(result.Result.Data);
                                dataLength = result.Result.Data.length;
                                for (var i = 0; i < dataLength; i++)
                                {
                                    //alert(result.Result.Data[i].Actions.length);
                                    result.Result.Data[i].chbId = "chbId" + i;
                                    result.Result.Data[i] = $scope.GetActionsUrl(result.Result.Data[i]);
                                    result.Result.Data[i].buttonCount = result.Result.Data[i].Actions.length;
                                }
                                instance.pageNgGridSettings.parameters.mapping.isLazyLoading = false;;
                                $defer.resolve(result.Result);

                                $scope.IsDomainLocked = result.Result.IsDomainLocked;

                            }
                            else {
                                instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(result.Msg, {
                                    hasClose: true,
                                    isAutoHide: true
                                });
                            }


                        });


                    }

                    instance.pageNgGridSettings.settings.reload();
                    instance.model = instance.pageNgGridSettings.parameters.storage.requestData;
                    instance.statusList =
                        [
                     { header: "Active", propertyname: "ProductStatusString", propertyvalue: "Active" },
                     { header: "Alert", propertyname: "ProductStatusString", propertyvalue: "Alert" },
                     { header: "Grace", propertyname: "ProductStatusString", propertyvalue: "Grace" },
                       { header: "Expired", propertyname: "ProductStatusString", propertyvalue: "Expired" },
                        ];

                    instance.flagsList = [
            { header: "Trial", propertyname: "IsTrial", propertyvalue: true },
            { header: "Blocked", propertyname: instance.filterFlagsPropertyNames, propertyvalue: "AlertBlocked" },
                    ];

                    instance.othersList = [
             { header: "New", propertyname: "IsNew", propertyvalue: true }
                    ];
                    instance.asyncStatus(pageHelper.AsyncStatus.Success);

                    if ($scope.SymantecSunsetMasterKey == 1 && $scope.currentDate > $scope.SymantecSunsetDate) {
                        if ($window.localStorage.length > 0) {
                            var notificationResult = popupWindow.replaceOrRefundResult();

                            if (notificationResult.isError != null) {
                                if ((notificationResult.isError === 'false')) {
                                    if (notificationResult.action == 'replace') {
                                        var ReplaceSuccessMesage = $scope.SSLInfoRes.static_Replace_SuccessMessage;
                                        $scope.pageNotification.stuckNotifications.addSuccess(ReplaceSuccessMesage, {
                                            hasClose: true,
                                            isAutoHide: true
                                        });
                                    }
                                    else {
                                        var RefundSuccessMesage = $scope.SSLInfoRes.static_Refund_SuccessMessage;
                                        $scope.pageNotification.stuckNotifications.addSuccess(RefundSuccessMesage.replace("{0}", notificationResult.symantecCertType), {
                                            hasClose: true,
                                            isAutoHide: true
                                        });
                                    }
                                }
                                else {
                                    var InsufficientErrorMsg = ((notificationResult.Message).indexOf('INSUFFICIENTFUNDS') > -1) ? 1 : 0;
                                    if (InsufficientErrorMsg) {
                                        $scope.pageNotification.stuckNotifications.addError(InsufficientErrorMessage.replace("{0}", $scope.ServerName), {
                                            hasClose: true,
                                            isAutoHide: false
                                        });
                                    }
                                    else {
                                        $scope.pageNotification.stuckNotifications.addError(ErrorMessage, {
                                            hasClose: true,
                                            isAutoHide: true
                                        });
                                    }
                                }
                            }
                            $window.localStorage.clear();
                        }
                    }


                },
                onSuccess: function (params) {
                    var instance = this.instance;
                    //instance.model = $scope.AssignCssClassForFields(params.Result.Data);
                    instance.asyncStatus(pageHelper.AsyncStatus.Active);
                },
                onActive: function (params) {
                    var instance = this.instance;
                    instance.showLoadPanel = false;
                    instance.showContent = true;

                },
                onLoading: function (params) {
                    var instance = this.instance;
                },
                onLocked: function (params) {
                    var instance = this.instance;
                },
                onError: function (params) {
                    var instance = this.instance;
                    instance.showLoadPanel = false;
                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                        hasClose: true,
                        isAutoHide: true
                    });
                }
            });


        }
    }


    $scope.pageHelper = pageHelper;//for call helpers methods from view
    $scope.pageNotification = new notificationService.instance();


    $scope.sslnotificationAlertArguments = { isAutoHide: true, hasClose: true }

   




    $scope.AssignCssClassForFields = function (model) {
        //CONDITION TO CHECK MODEL IS NULL OR UNDEFINED
        if (model != null && model != undefined) {

            for (indexService = 0; indexService < model.length; indexService++) {
                model[indexService].ExpirationDate = pageHelper.Date.dateFromJson(model[indexService].ExpirationDate);
                model[indexService].CssClass = '';
                model[indexService].SpanCssClass = '';
                if (model[indexService].ProductTypeString != null && model[indexService].ProductTypeString != undefined && model[indexService].ProductTypeString != "") {
                    if (model[indexService].ProductTypeString.toUpperCase() == 'HOSTING') {
                        model[indexService].CssClass = 'icon-hosting';
                    }
                    else if (model[indexService].ProductTypeString.toUpperCase() == 'PRIVATEEMAIL') {
                        model[indexService].CssClass = 'icon-email';
                    }
                    else if (model[indexService].ProductTypeString.toUpperCase() == 'SSL') {
                        if (model[indexService].ProviderName != null && model[indexService].ProviderName != undefined && model[indexService].ProviderName == 'COMODO'){
                            model[indexService].CssClass = 'strong icon-ssl-comodo';
                            if (model[indexService].Name == 'PositiveSSL FREE') {
                                model[indexService].Name = "PositiveSSL";
                                model[indexService].IsPromo = true;  
                            }
                        }
                          

                        else if (model[indexService].ProviderName != null && model[indexService].ProviderName != undefined && model[indexService].ProviderName == 'GEOTRUST')
                            model[indexService].CssClass = 'strong icon-ssl-geotrust';
                        else if (model[indexService].ProviderName != null && model[indexService].ProviderName != undefined && model[indexService].ProviderName == 'THAWTE')
                            model[indexService].CssClass = 'strong icon-ssl-thawte';
                        else
                            model[indexService].CssClass = 'strong icon-ssl-symantec';
                    }
                    else if (model[indexService].ProductTypeString.toUpperCase() == 'MAILCHIMP') {
                        model[indexService].CssClass = 'strong icon-mailchimp';
                    }
                    else if (model[indexService].ProductTypeString.toUpperCase() == 'GOOGLE') {
                        model[indexService].CssClass = 'strong icon-google';
                    }
                        //bala
                    else if (model[indexService].ProductTypeString.toUpperCase() == 'FREEDNS') {
                        if(model[indexService].ProductStatusString.toUpperCase() == 'ACTIVE'){
                            model[indexService].CssClass = 'icon-subdomain-freedns-active';
                        }
                        else{
                            model[indexService].CssClass = 'icon-subdomain-freedns-inactive';
                        }
                    }
                }

                // THIS IS TO GET THE SPAN CSS CLASS FOR THE STATUS LIEK ACTIVE, EXPIRED, GRACE etc.
                if (model[indexService].ProductStatusString != null && model[indexService].ProductStatusString != undefined && model[indexService].ProductStatusString != '')
                    model[indexService].SpanCssClass = $scope.GetCssClassForStatus(model[indexService].ProductStatusString, model[indexService])

            }

        }

        return model;
    }

    $scope.GetCssClassForStatus = function (Status, model) {
        var cssClass = '';
        model.ProducStatusDisplayString = "";
        if (Status.toUpperCase() == 'ACTIVE' || Status.toUpperCase() == 'ACTIVETRIAL') {

            cssClass = 'ok';
            model.ProducStatusDisplayString = "ACTIVE";
        }
        else if (Status.toUpperCase() == 'EXPIRED')
        {
            cssClass = 'danger';
            model.ProducStatusDisplayString = "EXPIRED";
        }
        else if (Status.toUpperCase() == 'ALERT' || Status.toUpperCase() == 'ALERTTRIAL')
        {
            cssClass = 'alert';
            model.ProducStatusDisplayString = "ALERT";
        }
        else if (Status.toUpperCase() == 'GRACE') {
            model.ProducStatusDisplayString = "GRACE";
            cssClass = 'grace';
        }
        else if (Status.toUpperCase() == 'ALERTBLOCKED') {
            model.ProducStatusDisplayString = "ALERT";
            cssClass = 'alert';
        }
        return cssClass;
    }

    function createGridItemBehavior(item, pageBehavior) {
        return new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                instance.model = item;
                function takeDecimal(value)
                { return (value < 10) ? "0" + value : value; }


                instance.asyncStatus(pageHelper.AsyncStatus.Success);
            },
            onSuccess: function (params) {
                var instance = this.instance;

                instance.asyncStatus(pageHelper.AsyncStatus.Active);
            },
            onActive: function (params) {
                var instance = this.instance;
                instance.showLoadPanel = false;
                instance.showContent = true;

            },
            onLoading: function (params) {
                var instance = this.instance;
            },
            onLocked: function (params) {
                var instance = this.instance;
            },
            onError: function (params) {
                var instance = this.instance;
                instance.showLoadPanel = false;
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
        });
    }

    // THIS FUNCTION CAN BE REMOVED IF ALL THE FEATURES ARE IMPLEMENTED
    $scope.FeatureNotEmplemented = function () {
        $scope.pageNotification.stuckNotifications.addSuccess("This feature is not implemented", {
            hasClose: true,
            isAutoHide: true
        });
    }


    $scope.autoRenewClick = new pageHelper.AsyncStateBehavior({

        constructor: function () {
            var instance = this.instance;
            instance.domainWhoIsAutoRenew = function (autoRenewFor, domainName, isDomainAutoRenew, isWGAutoRenew) {
                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                httpRepository.domainList.domainWhoIsAutoRenew(autoRenewFor, domainName, isDomainAutoRenew, isWGAutoRenew).then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                });
            }
            instance.serviceAutoRenew = function (service) {
                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                if (service != null && service.ProductTypeString == "PRIVATEEMAIL")
                {
                    httpRepository.privateEmail.changeAutoRenew(service.ProductId, service.IsAutoRenew).then(function (result) {
                        if (result.Error) {
                            service.IsAutoRenew = !service.IsAutoRenew;
                        }
                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                    });
                }
                else if (service != null && service.ProductTypeString == "HOSTING")
                {
                    httpRepository.domainList.hostingIsAutoRenew(service.ProductId, service.IsAutoRenew).then(function (result) {
                        if (result.Error) {
                            service.IsAutoRenew = !service.IsAutoRenew;
                        }
                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                    });
                }

            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);

            //following lines commented because, success msg must not be displayed after autorenew is clicked.(EAP-3663)

            //$scope.pageNotification.stuckNotifications.addSuccess(params.Msg, {
            //    hasClose: true,
            //    isAutoHide: true
            //});

        },
        onActive: function (params) {
            var instance = this.instance;
            var result = params;
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Loading...', false);
        },
        onLocked: function (params) {
            var instance = this.instance;
            var result = params;
        },
        onError: function (params) {
            $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });

    $scope.RemoveAutoRenew = function (actions) {
        for (actionindex = 0; actionindex < actions.length; actionindex++) {
            if (actions[actionindex].DisplayText == 'Auto-Renew')
                actions.splice(actionindex, 1);
        }
    }

    //Obsolete function. Changed to server side url framing
    $scope.GetActionsUrl = function (model) {
        model.ManageUrl = "#";
        model.RenewUrl = "#";
        model.BuyLicenceUrl = "#";
        model.LoginToWebMailUrl = "#";
        model.BuyNewUrl = "#";
        model.ActivateUrl = "#";
        model.RemoveUrl = "#";

        if (model.ProductTypeString.toUpperCase() == "SSL")
        {
            model.ManageUrl = "/Domains/SSL/ProductPage/" + model.ProductId;
            model.RenewUrl = $scope.CMSWebAddToCartURL + "producttype=ssl&action=renew&cids="+model.ProductId;
            model.BuyLicenceUrl = ""; // to be assigned
            model.BuyNewUrl = $scope.SiteServerNameUrl + 'security/ssl-certificates.aspx';
            model.ActivateUrl = "/Domains/SSL/Activate/" + model.ProductId;


        }
        else if (model.ProductTypeString.toUpperCase() == "PRIVATEEMAIL") {
            model.ManageUrl = "/Domains/PrivateEmail/" + model.ProductId;
            model.RenewUrl = $scope.CMSWebAddToCartURL + "subID=" + model.ProductId + "&Action=renew&ProductType=oxhosting";
            model.BuyLicenceUrl = $scope.CMSWebAddToCartURL + "subID=" + model.ProductId + "&Action=renew&ProductType=oxhosting&OrderAutoConfirm=False&BillingCycle=1";
            model.LoginToWebMailUrl = $scope.LoginToWebMailUrl;

        }
        else if (model.ProductTypeString.toUpperCase() == "HOSTING") {
            model.ManageUrl = "/Domains/hosting/details/" + model.ProductId;
            model.RenewUrl = $scope.CMSWebAddToCartURL + "package_id=" + model.ProductId + "&Action=renew&ProductType=hosting";
            model.BuyLicenceUrl = ""; // to be assigned
        }
        else if (model.ProductTypeString.toUpperCase() == "FREEDNS") {
            model.ManageUrl = "/Domains/Domaincontrolpanel/" + model.Name + "/advdns/";
        }
        return model;
       
    }

    $scope.ShowRenew = false;
    $scope.ShowRenewButtonExceptForFreeDns = function () {
        $scope.ShowRenew = false;
        var dataSelection = $scope.pageBehavior.pageNgGridSettings.parameters.selection.selectedItems;
            for (i = 0; i < dataSelection.length; i++) {
                if (dataSelection[i] != null) {
                    if (dataSelection[i].ProductTypeString.toUpperCase() == "HOSTING" || dataSelection[i].ProductTypeString.toUpperCase() == "SSL" || dataSelection[i].ProductTypeString.toUpperCase() == "PRIVATEEMAIL") {
                        $scope.ShowRenew = true;
                        break;
                    }
                }
            }
    }


    $scope.GetBulkRenewUrl = function () {
        var data = $scope.pageBehavior.pageNgGridSettings.parameters.selection.selectedItems;
        var domainServiceList=$scope.CMSWebAddToCartURL+"bulkproductdetails=";
        for (i = 0; i < data.length; i++)
        {
            if (data[i] != null) {
                if (data[i].ProductTypeString.toUpperCase() == "HOSTING") {
                    if (data[i].ProductId && data[i].ProductId > 0 && data[i].ProductStatusString.toLowerCase() !== "alertblocked")
                        domainServiceList += data[i].ProductId + ':hosting' + ',';
                }
                else if (data[i].ProductTypeString.toUpperCase() == "SSL") {
                    domainServiceList += data[i].ProductId + ':ssl' + ',';
                }
                else if (data[i].ProductTypeString.toUpperCase() == "PRIVATEEMAIL") {
                    domainServiceList += data[i].ProductId + ':oxhosting' + ',';
                }
            }
        }
        domainServiceList = domainServiceList != '' ? domainServiceList.slice(0, -1) : '';
        window.location.href = domainServiceList;
    }

    


    $scope.action = function (parameters, actionname) {
        if (parameters == undefined && actionname == undefined) {
            return;
        }
        if ((actionname.toUpperCase() == 'RENEW' || actionname.toUpperCase() == 'BUY NEW' || actionname.toUpperCase() == 'LEARN MORE')
            && parameters.Actions[0].DestinationURL == '#')
        {
            $scope.symantecCertDetails = {
                certificateId: parameters.ProductId,
                certificateType: parameters.Name,
                validYears : parameters.ValidYears,
                sansQty : parameters.sansQty
            }
            if (actionname.toUpperCase() == 'LEARN MORE') {
                actionname = 'activate';
            }
            popupWindow.openPopupWindow($scope.symantecCertDetails, actionname.toLowerCase(), $scope.SymantecSunsetDateWithFormat, $scope.SiteServerNameUrl);
            return;
        }
        if (actionname.toUpperCase() == 'AUTHORIZE FREEDNS') {
            $scope.openAuthorizeFreeDNSModalPopUp.onClick(parameters);
        }
        else if (actionname.toUpperCase() == 'REDIRECT DOMAIN') {
            splitParams = parameters.split(",")
            httpRepository.domainDetails.IsManagerHasRightsToPerformThisAction(splitParams[0], splitParams[1]).then(function (result) {
                if (result) {
                    new pageHelper.AsyncStateBehavior({
                        constructor: function () {
                            var instance = this.instance;
                            instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                            httpRepository.domainDetails.getUrlForwardingInfo(splitParams[0]).then(function (result) {
                                instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                                var urlForwardingInfoModel = JSON.parse(result.Result);
                                if (!result.Error && urlForwardingInfoModel != null) {
                                    if (urlForwardingInfoModel.IsShowManageButton) {
                                        var locationUrl = '/Domains/dns/managehostrecords/' + splitParams[0] + '/domainlist';
                                        window.location.href = locationUrl;
                                    }
                                    else if (urlForwardingInfoModel.IsShowSetupButton) {
                                        $scope.AddRecords(splitParams[0], 'addRedirect', 0, 'URL', urlForwardingInfoModel);
                                    }
                                    else if (urlForwardingInfoModel.IsShowEditButton) {
                                        $scope.AddRecords(splitParams[0], 'editRedirect', urlForwardingInfoModel.HostId, 'URL', urlForwardingInfoModel);
                                    }

                                }
                            });
                        },
                        onSuccess: function (params) {
                            var instance = this.instance;
                            var result = params;
                        },
                        onActive: function (params) {
                            var instance = this.instance;
                            var result = params;
                        },
                        onLoading: function (params) {
                            var instance = this.instance;
                            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Loading...', false);
                        },
                        onLocked: function (params) {
                            var instance = this.instance;
                            var result = params;
                        },
                        onError: function (params) {
                            $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                                hasClose: true,
                                isAutoHide: true
                            });
                        }
                    });
                }
                else {
                    $scope.pageNotification.stuckNotifications.addError("'User has no rights to perform this action", {
                        hasClose: true,
                        isAutoHide: true
                    });
                }
            });

        }
        else if (actionname.toUpperCase() == 'REDIRECT EMAIL') {

            splitParams = parameters.split(",")
            httpRepository.domainDetails.IsManagerHasRightsToPerformThisAction(splitParams[0], splitParams[1]).then(function (result) {
                if (result) {
                    new pageHelper.AsyncStateBehavior({
                        constructor: function () {
                            var instance = this.instance;
                            instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                            httpRepository.domainDetails.getEmailForwardingInfo(splitParams[0]).then(function (result) {
                                instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                                var emailForwardingInfoModel = result.Result;
                                if (!result.Error && emailForwardingInfoModel != null) {
                                    $scope.openResolveConflictRedirectEmailModalPopUp(splitParams[0], JSON.parse(emailForwardingInfoModel));
                                }
                            });
                        },
                        onSuccess: function (params) {
                            var instance = this.instance;
                            instance.asyncStatus(pageHelper.AsyncStatus.Active);
                            var result = params;
                        },
                        onActive: function (params) {
                            var instance = this.instance;
                            var result = params;
                        },
                        onLoading: function (params) {
                            var instance = this.instance;
                            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Loading...', false);
                        },
                        onLocked: function (params) {
                            var instance = this.instance;
                            var result = params;
                        },
                        onError: function (params) {
                            $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                                hasClose: true,
                                isAutoHide: true
                            });
                        }
                    });
                }
                else {
                    $scope.pageNotification.stuckNotifications.addError("'User has no rights to perform this action", {
                        hasClose: true,
                        isAutoHide: true
                    });
                }
            });

        }
        else if (actionname.toUpperCase() == 'REMOVE') {
            splitParams = parameters.split(",")
            $scope.RemoveSSlCertificateConfirmation(splitParams[0], splitParams[1])
        }





    }



    $scope.IsRemoveSSlCertificateConfirmationOpened = false;
    $scope.RemoveSSlCertificateConfirmation = function (certificateId, certificateName) { // var instance = this.instance;
        if (!$scope.IsRemoveSSlCertificateConfirmationOpened)
        {
            var activeModalInstance = $modal.open({
                templateUrl: "/Common/PromptRemove",
                controller: 'promptRemoveModalCtrl',
                size: 'lg',
                resolve: {
                    modalTitle: function () {

                        return $scope.SSLInfoRes.static_RemoveHeading.replace('{0}', certificateName) //"Remove Certificate ID";

                    },
                    modalContent: function () {

                        return 'Once an SSL certificate has been removed, it cannot be accessed again. Are you sure you want to remove this SSL certificate?' //"Removing certificates";
                    }
                }
            });
            activeModalInstance.result.then(function (msg) {
                $scope.IsRemoveSSlCertificateConfirmationOpened = false;
                if (msg == 'yes') {

                    location.href = "/domains/ssl/remove/" + certificateId + "/" + certificateId + "/DOMAINLIST";
                }
                //when user click 
            }
            , function () {
                $scope.IsRemoveSSlCertificateConfirmationOpened = false;
                // any result
                activeModalInstance = null;
            });
            activeModalInstance.opened.then(function () {
                $scope.IsRemoveSSlCertificateConfirmationOpened = true;
            });
        }
  



    }

    $scope.ResolveConflictRedirectEmailModalPopUp = false;
    $scope.openResolveConflictRedirectEmailModalPopUp = function (domainName, emailForwardingInfoModel) {

        if (!emailForwardingInfoModel.IsUsingPrivateEmail
				&& !emailForwardingInfoModel.IsUsingNamecheapHosting
				&& emailForwardingInfoModel.DnsType != 'Custom'
				&& (emailForwardingInfoModel.EmailType == 'NONE' || emailForwardingInfoModel.EmailType == 'FWD')) {
            // When domain is using default dns and it has Email Type as NONE or FWD.
            if (emailForwardingInfoModel.EmailType == 'NONE' || emailForwardingInfoModel.EmailType == 'FWD') {

                $scope.RedirectToManagePage(domainName, emailForwardingInfoModel.EmailType);
            }
        }
        else {
            if (!$scope.ResolveConflictRedirectEmailModalPopUp)
            {
                var modalInstance = $modal.open({
                    templateUrl: "/Domains/DomainDetails/ResolveConflictRedirectEmailModal",
                    controller: 'domainResolveConflictRedirectEmailCtrl',
                    size: 'lg',
                    backdrop: 'static',
                    resolve: {
                        RedirectEmailViewModel: function () {
                            return emailForwardingInfoModel;
                        },
                        DomainName: function () {
                            return domainName;
                        }
                    }
                });
                modalInstance.result.then(function (param) {
                    $scope.ResolveConflictRedirectEmailModalPopUp = false;
                    if (param != null && param != '') {
                        var instance = this.instance;
                        $scope.pageNotification.stuckNotifications.addError(param, {
                            hasClose: true,
                            isAutoHide: true
                        });
                    }
                });
                modalInstance.opened.then(function () {
                    $scope.ResolveConflictRedirectEmailModalPopUp = true;
                })
            }

        }
    }


    $scope.RedirectToManagePage = function (domainName, emailType) {
        var redirectLocationUrl = '/Domains/RedirectEmailList/' + domainName + '/domainlist';

        if (emailType == 'NONE') {
            // Internally update email type and then redirect to manage page
            httpRepository.domainDetails.resolveConflictSetEmailType(domainName, emailType).then(function (result) {
                if (result.Error == false) {
                    window.location.href = redirectLocationUrl;
                };
            });
        }
        else if (emailType == 'FWD') {
            // Redirect to manage page
            window.location.href = redirectLocationUrl;
        }
    }

    $scope.IsAddDnsPopUpOpened = false;
    $scope.AddRecords = function (domainName, pageType, hostID, recordType, pageModelClass) {
        var openModelParameter = pageType;
        var pageModelClass = pageModelClass;
        httpRepository.domainDetails.IsManagerHasRightsToPerformThisAction(domainName, "hosts").then(function (result) {
            if (!$scope.IsAddDnsPopUpOpened)
            {
                var modalInstance = $modal.open({
                    templateUrl: "/Domains/Dns/AdvancedDNSAddRecordsModel/",
                    controller: 'addDnsRecords',
                    size: 'lg',
                    backdrop: 'static',
                    resolve: {
                        openModelParameter: function () {
                            if (pageType != null) {
                                return $scope.pageTypeParam = pageType;
                            }
                            else {
                                return $scope.pageTypeParam = 'addNew';
                            }
                        },
                        domainName: function () {
                            return domainName;
                        },
                        hostingID: function () {
                            if (hostID != null) {
                                return $scope.hostRecordID = hostID;
                            }
                            else { return $scope.hostRecordID = 0; }

                        },
                        hostRecordType: function () {
                            if (hostID != null) {
                                return $scope.editHostRecordType = recordType;
                            }
                            else { return $scope.editHostRecordType = ''; }
                        },
                        pageModelClass: function () {
                            if (pageModelClass != '' && pageModelClass != null) {
                                return pageModelClass;
                            }
                            else {
                                return pageModelClass = 0;
                            }
                        },
                        domainType: function () {
                            return $scope.isSubDomain;
                        }
                    }
                });

                modalInstance.result.then(function (model) {
                    $scope.IsAddDnsPopUpOpened = false;
                    if (model != null) {
                        if (openModelParameter == 'AddDDNS' || openModelParameter == "EditDDNS") {
                            new pageHelper.AsyncStateBehavior(
                 {
                     constructor: function () {
                         var instance = this.instance;
                         instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Please wait.', true);
                         httpRepository.domainDns.getDynamicRecords(domainName, $scope.isSubDomain, true).then(function (result) {

                             if (!result.Error) {

                                 $scope.ddnsHostRecords = result.Result.HostInfo;
                                 instance.asyncStatus(pageHelper.AsyncStatus.Success, result);
                                 // var instance = this.instance;

                             }

                             else {
                                 // var instance = this.instance;

                                 $('div.site-msg.has-close.error.alert').show();
                                 $scope.errormessage = result.Msg;
                                 instance.asyncStatus(pageHelper.AsyncStatus.Error, result);

                             }

                         });
                     },
                     onSuccess: function () {
                         $scope.pageNotification.alerts.clear();
                     },
                     onError: function () {
                         $scope.pageNotification.alerts.clear();
                     }
                 });
                        }
                        else if (openModelParameter == 'addNew') {
                            //$scope.loadHostRecords();
                            $scope.LoadAdvancedDNSView();
                        }
                        else if (openModelParameter == 'edit') {
                            //$scope.loadHostRecords();                    
                            window.location.href = "/domains/dns/managehostrecords/" + domainName + "/" + $scope.pageFrom;
                        }
                        else if (openModelParameter == 'manageAddNew') {

                            window.location.href = "/domains/dns/managehostrecords/" + domainName + "/" + $scope.pageFrom;
                        }
                        else if (openModelParameter == 'addRedirect' || openModelParameter == 'editRedirect') {
                            if (model.isResultSuccess && !model.isCancel) {
                                $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInfoRes.success_Site_RedirectDomain, {
                                    hasClose: true,
                                    isAutoHide: true
                                });
                            }
                            else if (!model.isResultSuccess && !model.isCancel) {
                                $scope.pageNotification.stuckNotifications.addError($scope.DomainInfoRes.error_Site_RedirectDomain, {
                                    hasClose: true,
                                    isAutoHide: true
                                });

                            }
                        }
                    }
                });
                modalInstance.opened.then(function (model) {
                    $scope.IsAddDnsPopUpOpened = true;
                });
            }

        });

    }


    $scope.IsAuthorizeFreeDNSModalPopUpOpened = false;
    $scope.openAuthorizeFreeDNSModalPopUp = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            var listOfEmails = [];
            instance.onClick = function (param) {
                $scope.GetFreeDnsAuthorizationEmailList = new pageHelper.AsyncStateBehavior({
                    constructor: function () {
                        var instance = this.instance;
                        httpRepository.domainListAction.getFreeDnsAuthorizationEmailList(param).then(function (result) {
                            instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                        });
                    },
                    onSuccess: function (emailList) {
                        var instance = this.instance;
                        if (!$scope.IsAuthorizeFreeDNSModalPopUpOpened)
                        {
                            var verifyContactModalInstance = $modal.open({
                                templateUrl: "/Domains/AuthorizeFreeDNS",
                                controller: 'authorizeDNSCtrl',
                                size: 'lg',
                                backdrop: 'static',
                                keyboard: false,
                                resolve: {
                                    EmailList: function () {
                                        return emailList.Result;
                                    },
                                    Domain: function () {
                                        return param;
                                    }
                                }
                            });
                            verifyContactModalInstance.result.then(function (result) {
                                $scope.IsAuthorizeFreeDNSModalPopUpOpened = false;
                                var instance = this.instance;
                                if (result.Msg == "Success") {
                                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInfoRes.success_Site_ResendEmailSuccessMessage, {
                                        hasClose: true,
                                        isAutoHide: true
                                    });
                                }
                                else if (result.Msg == "Error") {
                                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addError($scope.DomainInfoRes.error_Site_ResendEmailErrorMessage, {
                                        hasClose: true,
                                        isAutoHide: true
                                    });
                                }
                            });
                            verifyContactModalInstance.opened.then(function (result) {
                                $scope.IsAuthorizeFreeDNSModalPopUpOpened = true;
                            });
                        }
        
                    },
                    onError: function (emailList) {
                        var instance = this.instance;
                        instance.asyncStatus(pageHelper.AsyncStatus.Active);
                        instance.activeNotification = $scope.pageNotification.stuckNotifications.addError('Failed to retrieve email list', {
                            hasClose: true,
                            isAutoHide: true
                        });
                    }
                });
            }
        }
    });


}]);
;
app.controller('domainBulkChangeOwnershipCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', 'notificationService', 'pageHelper', 'ncWizardService', '$cookieStore',
    function($scope, $rootScope, httpRepository, $filter, $modal, notificationService, pageHelper, ncWizardService, $cookieStore) {
        $scope.pageHelper = pageHelper;
        $scope.changeOwnership = DomainBulkChangeOwnershipRes;
        $scope.errorMessageRes = ErrorMessageRes;
        $scope.pageNotification = new notificationService.instance();

        $scope.$watch('pageBehavior.BulkDomainPushStep2Model.UserFromPassword', function(newValue, oldValue) {
            if (newValue !== oldValue) {
                var validity = pageHelper.Validation.password(newValue);
                for (var validityName in validity) {
                    $scope.changeDomainOwnershipForm.changeDomainOwnershipForm.password['errorMsg_' + validityName] = validity[validityName].arg;
                    $scope.changeDomainOwnershipForm.changeDomainOwnershipForm.password.$setValidity(validityName, validity[validityName].isValid);
                }
            }
        });

        $rootScope.closeLightbox = function() {
            window.location.href = '/Domains';
        }

        $scope.pageBehavior = new pageHelper.AsyncStateBehavior({
            constructor: function() {
                var instance = this.instance;
                instance.wizardService = ncWizardService;
                instance.activeNotification = $scope.pageNotification;
                instance.NoSearchOption = { minimumResultsForSearch: -1 };
                instance.BulkDomainPushStep2Model = {
                    Domains: [],
                    UserTo: "",
                    UserFromPassword: "",
                    SendNotification: true
                }
                instance.typeOfDomainContacts = [
                    { value: 'NewOwnerContacts', label: $scope.changeOwnership.label_NewOwner_Placeholder },
                    { value: 'KeepExistingContacts', label: $scope.changeOwnership.label_KeepExistingContact }
                ];

                instance.setFormScope = function(form) {
                    $scope.changeDomainOwnershipForm = form;
                }

                instance.initModel = function (serverModel) {
                    instance.asyncStatus((serverModel != null)
                        ? pageHelper.AsyncStatus.Success
                        : pageHelper.AsyncStatus.Error, { sender: "getModel", Result: serverModel });
                }

                instance.updatePanelTitle = function () {
                    if (instance.BulkDomainPushStep2Model.Domains.length == 0) {
                        instance.panelTitle = $scope.changeOwnership.label_wizard_EmptySelectedList;
                    } else if (instance.BulkDomainPushStep2Model.Domains.length == 1) {
                        instance.panelTitle = $scope.changeOwnership.label_wizard_OneSelectedItem;
                    } else {
                        instance.panelTitle = $filter('stringFormat')($scope.changeOwnership.label_wizard_SelectedItemsCount, [instance.BulkDomainPushStep2Model.Domains.length]);
                    }
                }

                instance.moveDomains = function() {
                    if ($scope.changeDomainOwnershipForm.changeDomainOwnershipForm.$valid) {
                        if (!instance.BulkDomainPushStep2Model.UseContactsType)
                            instance.BulkDomainPushStep2Model.UseContactsType = instance.typeOfDomainContacts[0].value;
                        httpRepository.domainInfo.MoveDomainsToAnotherOwner(JSON.stringify(instance.BulkDomainPushStep2Model))
                            .then(function(result) {
                                if (result.Error == false) {
                                    instance.asyncStatus(pageHelper.AsyncStatus.Success);
                                    $cookieStore.put('SuccessMessage', $scope.changeOwnership.notification_Success_Message);
                                    $rootScope.closeLightbox();
                                } else {
                                    instance.asyncStatus(pageHelper.AsyncStatus.Error, result);
                                }
                            });
                    } else {
                        angular.forEach($scope.changeDomainOwnershipForm.changeDomainOwnershipForm.$error.required, function (field) {
                            field.$setDirty();
                        });
                    }
                }
                instance.updatePanelTitle();
                instance.asyncStatus(pageHelper.AsyncStatus.Success);
            },

            onSuccess: function(params) {
                var instance = this.instance;
                if (params.sender == "getModel") {
                    instance.model = params.Result;
                    for (var index = 0; index < params.Result.Domains.length; index++) {
                        params.Result.Domains[index] = createitemBehavior(params.Result.Domains[index], instance);
                    }
                }
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
            },
            onActive: function() {
                var instance = this.instance;
                instance.showLoadPanel = false;
                instance.showContent = true;
            },
            onError: function(params) {
                var instance = this.instance;
                instance.showLoadPanel = false;
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
        });

        function createitemBehavior(item, pageBehavior) {
            return new pageHelper.AsyncStateBehavior({
                constructor: function() {
                    var instance = this.instance;
                    instance.model = item;
                    instance.isSelected = false;

                    instance.onSelectChange = function() {
                        if (instance.model.IsSelected)
                            pageBehavior.BulkDomainPushStep2Model.Domains.push(instance.model.DomainName);

                        else {
                            pageBehavior.BulkDomainPushStep2Model.Domains.forEach(function(element, index) {
                                if (element === instance.model.DomainName) {
                                    pageBehavior.BulkDomainPushStep2Model.Domains.splice(index, 1);
                                }
                            });
                        }
                        pageBehavior.updatePanelTitle();
                    }
                },

                onSuccess: function() {
                    var instance = this.instance;
                    instance.asyncStatus(pageHelper.AsyncStatus.Active);
                },
            });
        }
    }]);
app.controller('domainBulkDNSHostCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'ncWizardService',
function ($scope, $rootScope, httpRepository, $filter, $modal, notificationService, pageHelper, $q, ncGridParams, $sce, ncWizardService) {


    $scope.pageHelper = pageHelper;
    $scope.step1Notification = new notificationService.instance();
    $scope.step2Notification = new notificationService.instance();
    $scope.step3Notification = new notificationService.instance();
    $scope.step4Notification = new notificationService.instance();
    $scope.pageNotification = new notificationService.instance();
    $scope.OptionSelectionFromStep2 = '';
    $scope.ErrorMsgRes = ErrorMessageRes;
    $scope.EmailForwardingProviders = [];
    $scope.PrivateEmailMxProviders = [];
    $scope.PrivateEmailTxtProviders = [];
    $scope.PrivateEmailCNAMEProviders = [];
    $scope.GmailProviders = [];
    //OVER WRITE SELECTION 3 IS FOR OVERWRITE ONLY DNS
    $scope.OverwriteSelection = 3;
    $scope.CommonButtonTextRes = CommonButtonTextRes;
    $scope.Step2ButtonName = $scope.CommonButtonTextRes.static_SaveChanges;
    $scope.Step3ButtonName = $scope.CommonButtonTextRes.static_SaveChanges;
    $scope.Step4ButtonName = $scope.CommonButtonTextRes.static_SaveChanges;
    this.initialize = function (model) {
        $scope.Model = model.Model;
        $scope.Messages = model.Messages;
        $scope.SelectedDomainList = [];
        for (providerIndex = 0; providerIndex < $scope.Model.EmailProviders.length; providerIndex++) {
            if ($scope.Model.EmailProviders[providerIndex].ProviderSubType.toUpperCase() == "FWD") {
                $scope.EmailForwardingProviders.unshift($scope.Model.EmailProviders[providerIndex])
            }
            else if ($scope.Model.EmailProviders[providerIndex].ProviderSubType.toUpperCase() == "PRIVATEEMAIL") {
                if ($scope.Model.EmailProviders[providerIndex].RecordType.toUpperCase() == 'MX')
                    $scope.PrivateEmailMxProviders.unshift($scope.Model.EmailProviders[providerIndex])
                else if ($scope.Model.EmailProviders[providerIndex].RecordType.toUpperCase() == 'TXT')
                    $scope.PrivateEmailTxtProviders.unshift($scope.Model.EmailProviders[providerIndex])
                else if ($scope.Model.EmailProviders[providerIndex].RecordType.toUpperCase() == 'CNAME')
                    $scope.PrivateEmailCNAMEProviders.unshift($scope.Model.EmailProviders[providerIndex])
            }
            else if ($scope.Model.EmailProviders[providerIndex].ProviderSubType.toUpperCase() == "GMAIL") {
                $scope.GmailProviders.unshift($scope.Model.EmailProviders[providerIndex])
            }
        }
    }
    $scope.CancelBulkAction = $rootScope.closeLightbox = function () {
        window.location.href = "/Domains/DomainList"
    }

    $scope.onCheckIp = function (record, recordType) {
        if (record == null) return;
        var isValidIp = true;
        if (record.recordType != null && record.recordType.toUpperCase() == 'A') {
            if (record != null && record.target != "" && record.target != null) {
                var validityIp4 = pageHelper.Validation.ip4(record.target);
                for (var validityName in validityIp4) {
                    isValidIp = validityIp4[validityName].isValid;
                }
            }
            record.valIp = isValidIp;
        }
        else if (record.recordType != null && record.recordType.toUpperCase() == 'AAAA') {
            if (record != null && record.target != "" && record.target != null) {
                var validityIp6 = pageHelper.Validation.ip6(record.target);
                isValidIp = validityIp6.isValid;
            }
            record.valIp = isValidIp;
        }
        else if (recordType != null && recordType.toUpperCase() == 'MXE') {
            if (record != null && record.Target != "" && record.Target != null) {
                var validityIp4 = pageHelper.Validation.ip4(record.Target);
                for (var validityName in validityIp4) {
                    isValidIp = validityIp4[validityName].isValid;
                }
            }
            record.valIp = isValidIp;
        }
        else
            record.valIp = true;
    };

    $scope.AssignOverwriteSelection = function (isUpdateHostRecords, isUpdateMailsettings, isWantToLeaveHostAndMail) {
        // OVERWRITE DNS , HOST AND MAIL SETTINGS
        if (isUpdateHostRecords && isUpdateMailsettings && $scope.ServerTypeSelected != 'KeepExistingDNS') {
            $scope.OverwriteSelection = 1;
        }
            // OVERWRITE DNS AND HOST RECORDS AND KEEP MAIL SETTINGS
        else if (isUpdateHostRecords && !isUpdateMailsettings && $scope.ServerTypeSelected != 'KeepExistingDNS') {
            $scope.OverwriteSelection = 2;
        }
            // OVERWRITE DNS AND HOST RECORDS AND KEEP MAIL SETTINGS
        else if ((isWantToLeaveHostAndMail && $scope.ServerTypeSelected != 'KeepExistingDNS') || $scope.ServerTypeSelected == 'NamecheapsharedHosting' || $scope.ServerTypeSelected == 'Custom') {
            $scope.OverwriteSelection = 3;
        }
            // Keep existing DNS , and overwrite HOST AND MAIL SETTINGS
        else if (isUpdateHostRecords && isUpdateMailsettings && $scope.ServerTypeSelected == 'KeepExistingDNS') {
            $scope.OverwriteSelection = 4;
        }
            // Keep existing DNS AND MAIL SETTINGS , and overwrite HOST 
        else if (isUpdateHostRecords && !isUpdateMailsettings && $scope.ServerTypeSelected == 'KeepExistingDNS') {
            $scope.OverwriteSelection = 5;
        }
            // Keep existing DNS AND HOST , and overwrite Mail Settings 
        else if (!isUpdateHostRecords && isUpdateMailsettings && $scope.ServerTypeSelected == 'KeepExistingDNS') {
            $scope.OverwriteSelection = 6;
        }
            // Overwrite DNS and Mail settings and keep existing host records
        else if (!isUpdateHostRecords && isUpdateMailsettings && $scope.ServerTypeSelected != 'KeepExistingDNS') {
            $scope.OverwriteSelection = 7;
        }

    }
    $scope.ChangeButtonName = function () {
        if (ncWizardService.steps.length == 4) {
            $scope.Step2ButtonName = $scope.CommonButtonTextRes.static_Next;
            $scope.Step3ButtonName = $scope.CommonButtonTextRes.static_Next;
            $scope.Step4ButtonName = $scope.CommonButtonTextRes.static_SaveChanges;



        }
        else if (ncWizardService.steps.length == 3) {
            $scope.Step2ButtonName = $scope.CommonButtonTextRes.static_Next;
            $scope.Step3ButtonName = $scope.CommonButtonTextRes.static_SaveChanges;
        }
        else if (ncWizardService.steps.length == 2) {
            if ($scope.ServerTypeSelected != 'KeepExistingDNS')
                $scope.Step2ButtonName = $scope.CommonButtonTextRes.static_SaveChanges;
            else
                $scope.Step2ButtonName = $scope.CommonButtonTextRes.static_Next;
        }

    }
    $scope.pageAction = new pageHelper.AsyncStateBehavior({
        constructor: function () {
          
            var instance = this.instance;
            instance.CurrentStep = 'step1';
            var loadingMessage = '';
            instance.SendConfirmationMail = false;
            instance.CheckToProceed = false;
            instance.OverwriteSelection = 0;
            instance.ServerTypeSelected = "NamecheapDefault";
            instance.leaveHostRecords = false;
            instance.updateHostRecords = false;
            instance.updateMailSettings = false;
            instance.leaveHostRecordsBackup = false;
            instance.updateHostRecordsBackup = false;
            instance.updateMailSettingsBackup = false;
            //FUNCTION I want to leave Host Records CHECKBOX CLICK EVENT
            instance.IwantLeaveHostRecordsClick = function () {
                if (instance.leaveHostRecords) {
                    instance.updateHostRecords = false;
                    instance.updateMailSettings = false;
                    for (wzleaveHostRecords = 0; wzleaveHostRecords < ncWizardService.steps.length ; wzleaveHostRecords++) {
                        if (ncWizardService.steps[wzleaveHostRecords].description == "Host Records options" || ncWizardService.steps[wzleaveHostRecords].description == "Mail Settings") {
                            ncWizardService.steps.splice(wzleaveHostRecords, 1)
                            wzleaveHostRecords -= 1;
                        }
                    }
                    //ncWizardService.steps.length = 2;
                }
                $scope.ChangeButtonName();
                $scope.AssignOverwriteSelection(instance.updateHostRecords, instance.updateMailSettings, instance.leaveHostRecords)
            }
            instance.IWantToUpdateHostRecords = function () {
                if (!instance.updateHostRecords) {
                    for (wzIndex = 0; wzIndex < ncWizardService.steps.length ; wzIndex++) {
                        if (ncWizardService.steps[wzIndex].description == "Host Records options") {
                            ncWizardService.steps.splice(wzIndex, 1)
                        }
                    }

                }
                $scope.ChangeButtonName();
                $scope.AssignOverwriteSelection(instance.updateHostRecords, instance.updateMailSettings, instance.leaveHostRecords)

            }
            instance.IWantToUpdateMailSettings = function () {
                if (!instance.updateMailSettings) {
                    for (wizardIndex = 0; wizardIndex < ncWizardService.steps.length ; wizardIndex++) {
                        if (ncWizardService.steps[wizardIndex].description == "Mail Settings") {
                            ncWizardService.steps.splice(wizardIndex, 1)
                        }
                    }

                }

                $scope.ChangeButtonName();
                $scope.AssignOverwriteSelection(instance.updateHostRecords, instance.updateMailSettings, instance.leaveHostRecords)

            }

            // ncWizardService.steps.length = 4;
            instance.Step1Action = function () {
                var hasDefault = 0, hasBackup = 0, hasShared = 0, hasCustom = 0, hasFreeDns = 0, hasNone = 0, hasHostRights = 0, hasDnsRights = 0, isOwner = 0;
                $scope.step1Notification.alerts.clear();
                $scope.SelectedDomainList = [];
                instance.IsDisableHostOptions = false;
                if (instance.CheckToProceed == true) {
                    $('input:checkbox[name=selecteddomains]:checked').each(function () {
                        var domainListItem = {};
                        domainListItem.DomainName = $(this).attr('id');
                        var valueToParse = $(this).attr('item-value');
                        if (valueToParse != null) {
                            domainListItem.Props = JSON.parse(valueToParse);
                        }
                        else {
                            domainListItem.Props = null;
                        }
                        if (domainListItem.Props.NameServerType == undefined)
                            domainListItem.Props.NameServerType = "NONE";
                        if (domainListItem.Props.IsOwner == undefined)
                            domainListItem.Props.IsOwner = false;
                        if (domainListItem.Props.HasEditDNS == undefined)
                            domainListItem.Props.HasEditDNS = false;
                        if (domainListItem.Props.HasEditHost == undefined)
                            domainListItem.Props.HasEditHost = false;

                        var IndexofDot = domainListItem.DomainName.indexOf(".");
                        domainListItem.tld = domainListItem.DomainName.substr(IndexofDot + 1);
                        var isExist = false, canAddToList = false;
                        var domainList = $scope.SelectedDomainList;
                        // Already exists in list
                        for (i = 0; i < domainList.length; i++) {
                            if (domainList[i].DomainName == domainListItem.DomainName) {
                                isExist = true;
                            }
                        }
                        if (!isExist) {
                            $scope.SelectedDomainList.push(domainListItem)
                            if ("DEFAULT" == domainListItem.Props.NameServerType)
                                hasDefault = hasDefault + 1;
                            if ("BACKUP" == domainListItem.Props.NameServerType)
                                hasBackup = hasBackup + 1;
                            if ("SHAREDHOSTING" == domainListItem.Props.NameServerType)
                                hasShared = hasShared + 1;
                            if ("CUSTOM" == domainListItem.Props.NameServerType)
                                hasCustom = hasCustom + 1;
                            if ("FREEDNS" == domainListItem.Props.NameServerType)
                                hasFreeDns = hasFreeDns + 1;
                            if ("NONE" == domainListItem.Props.NameServerType)
                                hasNone = hasNone + 1;
                            if (domainListItem.Props.IsOwner)
                                isOwner = isOwner + 1;
                            if (domainListItem.Props.HasEditDNS)
                                hasDnsRights = hasDnsRights + 1;
                            if (domainListItem.Props.HasEditHost)
                                hasHostRights = hasHostRights + 1;
                        }
                    });

                    if (hasDefault + hasBackup + hasShared + hasCustom + hasNone == 0 && hasFreeDns > 0) { // No DNS Allowed
                        instance.IsDisableDnsOptions = true;
                        instance.ServerTypeSelected = "KeepExistingDNS";
                        instance.IsDisableHostMailOnlyOption = false;
                    }
                    else if (hasDefault + hasBackup + hasFreeDns + hasNone == 0 && hasShared + hasCustom > 0) { // Cannot change hosts without changing DNS
                        instance.IsDisableDnsOptions = false;
                        instance.ServerTypeSelected = "NamecheapDefault";
                        instance.IsDisableHostMailOnlyOption = true;
                    }
                    else {
                        instance.IsDisableDnsOptions = false;
                        instance.ServerTypeSelected = "NamecheapDefault";
                        instance.IsDisableHostMailOnlyOption = false;
                    }

                    if (isOwner == 0) {
                        if (hasDnsRights == 0 && hasHostRights > 0) {
                            instance.IsDisableDnsOptions = true;
                            instance.IsDisableHostCheckBoxes = false;
                            instance.IsDisableHostMailOnlyOption = false;
                            instance.ServerTypeSelected = "KeepExistingDNS";
                        }
                        if (hasDnsRights > 0 && hasHostRights == 0) {
                            instance.IsDisableDnsOptions = false;
                            instance.IsDisableHostCheckBoxes = true;
                            instance.IsDisableHostMailOnlyOption = true;
                            instance.ServerTypeSelected = "NamecheapDefault";
                        }
                    }

                    if ($scope.SelectedDomainList.length > 0) {
                        instance.asyncStatus(pageHelper.AsyncStatus.Active);
                        ncWizardService.moveNext();
                    }
                    else if ($scope.SelectedDomainList.length == 0) {
                        $scope.step1Notification.alerts.addError($scope.Messages.SelectAtleastOneDomainToProceed, {
                            hasClose: true,
                            isAutoHide: true
                        });
                        $('html, body').animate({ scrollTop: $('div[link="step1Notification"]').offset().top - 20 }, 200);
                    }
                    else {
                        $scope.step1Notification.alerts.addError($scope.Messages.CannotProceedToSetp2, {
                            hasClose: true,
                            isAutoHide: true
                        });
                        $('html, body').animate({ scrollTop: $('div[link="step1Notification"]').offset().top - 20 }, 200);
                    }

                }
            }
            instance.Step2Action = function () {
                $scope.domainList = '';
                for (domainIndex = 0; domainIndex < $scope.SelectedDomainList.length; domainIndex++) {
                    if ($scope.domainList == '') {
                        $scope.domainList = $scope.SelectedDomainList[domainIndex].DomainName;
                    }
                    else {
                        $scope.domainList = $scope.domainList + ',' + $scope.SelectedDomainList[domainIndex].DomainName;
                    }
                }


                $scope.DnsServerTypeConfiguration = {};

                if ($scope.ServerTypeSelected == 'NamecheapDefault') {
                    $scope.DnsServerTypeConfiguration.ServerType = "DEFAULT";
                    $scope.DnsServerTypeConfiguration.Records = $scope.Model.DefaultNameServers;
                }

                else if ($scope.ServerTypeSelected == 'NamecheapBackUp') {
                    $scope.DnsServerTypeConfiguration.ServerType = "BACKUP";
                    $scope.DnsServerTypeConfiguration.Records = $scope.Model.BackupNameServers;
                }

                else if ($scope.ServerTypeSelected == 'NamecheapsharedHosting') {
                    $scope.DnsServerTypeConfiguration.ServerType = "SHAREDHOSTING";
                    $scope.DnsServerTypeConfiguration.Records = $scope.Model.SharedNameServers;
                }
                else if ($scope.ServerTypeSelected == 'Custom') {
                    $scope.DnsServerTypeConfiguration.ServerType = "CUSTOM";
                    $scope.DnsServerTypeConfiguration.Records = $scope.CustomDnsRecords;
                }
                else {
                    $scope.DnsServerTypeConfiguration.ServerType = "NONE";
                    $scope.DnsServerTypeConfiguration.Records = [];
                }


                if (ncWizardService.steps.length > 2)
                {
                    angular.forEach($scope.frmOverwriteDnsHostRecords.$error.required, function (formField) {
                        formField.$dirty = true;
                    });
                    if ($scope.frmOverwriteDnsHostRecords.$invalid) {
                        $scope.step2Notification.alerts.clear();
                        $scope.step2Notification.alerts.addError($scope.ErrorMsgRes.error_Site_SummaryMessage, { isAutoHide: true, hasClose: true })
                        $rootScope.scroolToElement($('[link="step2Notification"]'), 100);
                    }
                    else {
                         ncWizardService.moveNext();
                    }
                   
                }

                else {
                    angular.forEach($scope.frmOverwriteDnsHostRecords.$error.required, function (formField) {
                        formField.$dirty = true;
                    });
                    if ($scope.frmOverwriteDnsHostRecords.$invalid) {
                        $scope.step2Notification.alerts.clear();
                        $scope.step2Notification.alerts.addError($scope.ErrorMsgRes.error_Site_SummaryMessage, { isAutoHide: true, hasClose: true })
                        $rootScope.scroolToElement($('[link="step2Notification"]'), 100);
                    }
                    else {
                        //$scope.frmOverwriteDnsHostRecords.$invalid = false;

                        instance.CurrentStep = 'step2';
                        instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                        $scope.MailSettingsConfiguration.MailSettingType = "Leave"
                        httpRepository.domainSetBulkDns.bulkDnsSetDomainDnsHost($scope.domainList, $scope.OverwriteSelection, $scope.DnsServerTypeConfiguration, $scope.HostRecords, $scope.MailSettingsConfiguration, $scope.pageAction.SendConfirmationMail).then(function (result) {
                            if (result.Error) {
                                $scope.step2Notification.alerts.clear();
                                $scope.step2Notification.alerts.addError(result.Msg, { isAutoHide: true, hasClose: true })
                                $rootScope.scroolToElement($('[link="step2Notification"]'), 100);
                            }
                            else {
                                window.location.href = "/domains/domainlist/"
                            }
                        });

                    }

                }
            }
            instance.Step3Action = function () {
                if (ncWizardService.steps.length > 3)
                {
                    angular.forEach($scope.frmOverwriteDnsHostRecords.$error.required, function (formField) {
                        formField.$dirty = true;
                    });
                    var isFormValid = true;
                    $scope.HostRecords.some(function (element) {
                        if (element.valIp == false) {
                            isFormValid = false;
                            return true;
                        }
                    });
                    if ($scope.frmOverwriteDnsHostRecords.$invalid || isFormValid == false) {
                        $scope.step3Notification.alerts.clear();
                        $scope.step3Notification.alerts.addError($scope.ErrorMsgRes.error_Site_SummaryMessage, { isAutoHide: true, hasClose: true })
                        $rootScope.scroolToElement($('[link="step3Notification"]'), 100);
                    }
                    else {
                        ncWizardService.moveNext();
                    }
                }
                   
                else {
                    $scope.SaveChangesClicked = true;
                    angular.forEach($scope.frmOverwriteDnsHostRecords.$error.required, function (formField) {
                        formField.$dirty = true;
                    });
                    var isFormValid = true;
                    $scope.HostRecords.some(function (element) {
                        if (element.valIp == false) {
                            isFormValid = false;
                            return true;
                        }
                    });
                    if ($scope.frmOverwriteDnsHostRecords.$invalid || isFormValid == false) {
                        $scope.step3Notification.alerts.clear();
                        $scope.step3Notification.alerts.addError($scope.ErrorMsgRes.error_Site_SummaryMessage, { isAutoHide: true, hasClose: true })
                        $rootScope.scroolToElement($('[link="step3Notification"]'), 100);
                    }

                    else {
                        instance.CurrentStep = 'step3';
                        $scope.MailSettingsConfiguration.MailSettingType = "Leave"
                        instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                        httpRepository.domainSetBulkDns.bulkDnsSetDomainDnsHost($scope.domainList, $scope.OverwriteSelection, $scope.DnsServerTypeConfiguration, $scope.HostRecords, $scope.MailSettingsConfiguration, $scope.pageAction.SendConfirmationMail).then(function (result) {
                            if (result.Error) {
                                $scope.step3Notification.alerts.clear();
                                $scope.step3Notification.alerts.addError(result.Msg, { isAutoHide: true, hasClose: true })
                                $rootScope.scroolToElement($('[link="step3Notification"]'), 100);
                            }
                            else {
                                window.location.href = "/domains/domainlist/"
                            }
                        });


                    }
                }




            }

            instance.Step4Action = function () {
                $scope.SaveChangesClicked = true;
                angular.forEach($scope.frmOverwriteDnsHostRecords.$error.required, function (formField) {
                    formField.$dirty = true;
                });
                var isFormValid = true;
                if (isFormValid && $scope.MailSettingsConfiguration != null && $scope.MailSettingsConfiguration.MailsettingRecords != null && $scope.MailSettingsConfiguration.MailsettingRecords.length > 0) {
                    $scope.MailSettingsConfiguration.MailsettingRecords.some(function (element) {
                        if (element.valIp == false) {
                            isFormValid = false;
                            return true;
                        }
                    });
                }
                if ($scope.frmOverwriteDnsHostRecords.$invalid || isFormValid == false) {
                    $scope.step3Notification.alerts.clear();
                    $scope.step3Notification.alerts.addError($scope.ErrorMsgRes.error_Site_SummaryMessage, { isAutoHide: true, hasClose: true })
                    $rootScope.scroolToElement($('[link="step4Notification"]'), 100);
                }
                else {
                    instance.CurrentStep = 'step4';
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                    if ($scope.MailSettingsConfiguration.MailsettingRecords == undefined) {
                        $scope.MailSettingsConfiguration.MailSettingType = "None"
                    }
                    httpRepository.domainSetBulkDns.bulkDnsSetDomainDnsHost($scope.domainList, $scope.OverwriteSelection, $scope.DnsServerTypeConfiguration, $scope.HostRecords, $scope.MailSettingsConfiguration, $scope.pageAction.SendConfirmationMail).then(function (result) {
                        if (result.Error) {
                            $scope.step4Notification.alerts.clear();
                            $scope.step4Notification.alerts.addError(result.Msg, { isAutoHide: true, hasClose: true })
                            $rootScope.scroolToElement($('[link="step4Notification"]'), 100);
                        }
                        else {
                            window.location.href = "/domains/domainlist/"
                        }
                    });



                }


            }

        },
        onSuccess: function () {
            var instance = this.instance;
            //var ncWizardService1 = ncWizardService;
            //if (ncWizardService.steps.length == 0)
            //    ncWizardService.steps.length = 2
        },
        onActive: function (params) {
            var instance = this.instance;
            $scope.pageNotification.alerts.clear();
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onLoading: function (params) {
            var instance = this.instance;
            $scope.pageNotification.alerts.clear();
            if (instance.CurrentStep=='step4')
                instance.activeNotification = $scope.step4Notification.stuckNotifications.addLoading('<B>Processing...</B> Please wait.', false);
            else if (instance.CurrentStep == 'step3')
                instance.activeNotification = $scope.step3Notification.stuckNotifications.addLoading('<B>Processing...</B> Please wait.', false);
            else if (instance.CurrentStep == 'step2')
                instance.activeNotification = $scope.step2Notification.stuckNotifications.addLoading('<B>Processing...</B> Please wait.', false);
            instance.isDisabled = true;
            instance.showError = false;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onWarning: function (params) {
            var instance = this.instance;
            $scope.pageNotification.alerts.clear();
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addWarning('<B>' + params + '</B>', {
                hasClose: true,
                isAutoHide: true
            });
            instance.isDisabled = false;
            instance.showError = false;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Message, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });

    //CLOSE LIGHTBOX EVENT
    $rootScope.closeLightbox = function () {
        window.location.href = "/Domains/DomainList"
    }
    //CLOSE LIGHTBOX EVENT

    //FUNCION TO NG-REPEAT FOR STATIC NUMBER OF TIMES
    $scope.getTimes = function (n) {
        return new Array(n);
    };
    //FUNCION TO NG-REPEAT FOR STATIC NUMBER OF TIMES

    //SCOPE VARIABLES
    $scope.ServerTypeSelected = "NamecheapDefault";
    $scope.OverwriteSelection = 0;
    $scope.TTL = [{ text: 'Automatic', value: 'Auto' }, { text: '1 minute', value: '60' }, { text: '5 minutes', value: '300' }, { text: '20 minutes', value: '1200' }, { text: '30 minutes', value: '1800' }, { text: '60 minutes', value: '3600' }];
    $scope.UrlRedirectTypes = [{ text: 'Unmasked', value: 'Unmasked' }, { text: 'Masked', value: 'Masked' }, { text: 'Permanent (301)', value: 'Permanent (301)' }]
    $scope.UrlRedirectTypesWithoutPermanent301 = [{ text: 'Masked', value: 'Masked' }, { text: 'Unmasked', value: 'Unmasked' }]

    $scope.MailSettingType = "";
    //SCOPE VARIABLES

    //REGEX VARIABLES FROM GlobalRegularExpression.js
    $scope.AlphaNumeric = nc_Val_AlphaNumericDot;
    $scope.NameserverPattern = nc_Val_NameServerRegex;
    $scope.HostNamePatternRegex = "^@$|^\\*$|^[*a-zA-Z0-9._-]+$";//nc_Val_HostName;
    $scope.MailServerPatternRegex = "^@$|^\\*$|^[*a-zA-Z0-9._-]+$";
    $scope.ServiceAndProtocolRegex = nc_Val_Protocol;
    $scope.Ipv4Regex = nc_Val_Ipv4;
    $scope.Ipv6Regex = nc_Val_Ipv6;
    //REGEX VARIABLES FROM GlobalRegularExpression.js
    $scope.HostRecords = []
    $scope.MailSettings = []
    $scope.MailSettingsConfiguration = {};
    $scope.CustomDnsRecords = ['', '', '', '', '', ''];

    $scope.AddCustomDnsRecords = function (value, index) {
        $scope.CustomDnsRecords[index] = value;
    }
    //FUNCTION TO ASSIGN THE SELECTED SERVER TYPE TO THE SCOPE VARIABLE
    $scope.ServerTypeSelection = function (val) {
        $scope.ServerTypeSelected = val;
        for (indexHost = 0; indexHost < $scope.HostRecords.length; indexHost++) {
            if (val == 'NamecheapsharedHosting' || val == 'Custom') {
                $scope.RemoveHostRecords(indexHost);
                indexHost = indexHost - 1;
                $scope.RemoveMailSettings();
            }
            // THIS IS COMMENTED OUT SINCE FOR NAMECHEAP BACK UP ENOM ALLOWS AAAA AND NS RECORDS HENCE IT SHOULD NOT BE REMOVED WHEN WE SELECTED NAMECHEAP BACK UP EAP-3943
            else if (val == 'NamecheapBackUp' && $scope.HostRecords[indexHost].recordType == 'NS')
            {
                $scope.RemoveHostRecords(indexHost);
                indexHost = indexHost - 1;
            }
        }
        $scope.pageAction.leaveHostRecords = false;
        $scope.pageAction.updateHostRecords = false;
        $scope.pageAction.updateMailSettings = false;
        ncWizardService.steps.length = 2;
        $scope.ChangeButtonName();
        $scope.OverwriteSelection = 0;
        $scope.AssignOverwriteSelection($scope.pageAction.updateHostRecords, $scope.pageAction.updateMailSettings, $scope.pageAction.leaveHostRecords);
    }
    //FUNCTION TO ASSIGN THE SELECTED SERVER TYPE TO THE SCOPE VARIABLE


    //FUNCTION TO GENERATE HOST RECORDS ON A, AAAA, CNAME, NS SPF, SRV, TXT, URL REDIRECT BUTTON CLICK
    $scope.GenerateHostRecords = function (recordType, ServerTypeSelected) {
        var serv = ServerTypeSelected;
        if (!($scope.ServerTypeSelected == 'NamecheapBackUp' && recordType == 'NS')) {
            $scope.hostRecords = {};
            $scope.hostRecords.recordType = recordType;
            $scope.hostRecords.recordName = '';
            $scope.hostRecords.hostName = '';
            $scope.hostRecords.target = '';
            $scope.hostRecords.ttl = '';
            if (recordType == 'SRV') {
                $scope.priority = '';
                $scope.weight = '';
                $scope.port = '';
                $scope.protocol = '';
                $scope.service = '';
            }
            if (recordType == 'URL') {
                $scope.hostRecords.urlredirecttype = '';
                $scope.hostRecords.TagTitle = '';
                $scope.hostRecords.TagDescription = '';
                $scope.hostRecords.TagKeywords = '';
                $scope.hostRecords.TagURL = '';

            }
            $scope.HostRecords.unshift($scope.hostRecords);
        }
    }
    //FUNCTION TO GENERATE HOST RECORDS ON A, AAAA, CNAME, NS SPF, SRV, TXT, URL REDIRECT BUTTON CLICK

    //FUNCTIN TO REMOVE SELECTED HOSTE RECORDS ON DELETE BUTTON CLICK
    $scope.RemoveHostRecords = function (index) {
        $scope.HostRecords.splice(index, 1);
    }
    //FUNCTIN TO REMOVE SELECTED HOSTE RECORDS ON DELETE BUTTON CLICK

    //'Automatic', '1 minute', '5 minutes', '20 minutes', '30 minutes', '60 minutes'
    $scope.NoSearchOption = { minimumResultsForSearch: -1 };



    $scope.ChangeDirty = function (elem) {
        $scope.SaveChangesClicked = false;
        if (elem.$viewValue == '' || elem.$viewValue == undefined) {
            elem.$dirty = false;
        }
        else {
            elem.$dirty = true;
        }
    }

    //FUNCTION TO GENERATE MAIL SETTINGS 
    $scope.GenerateMailSettings = function (type) {

        $scope.MailSettingsConfiguration.MailSettingType = type;
        $scope.MailSettingType = type;
        if (type == 'MX') {
            $scope.MailSettingsConfiguration.MailsettingRecords = [];
            for (mailIndex = 0; mailIndex < 5; mailIndex++) {
                $scope.MailConfigRecords = {};
                $scope.MailConfigRecords.RecordName = '';
                $scope.MailConfigRecords.HostName = '';
                $scope.MailConfigRecords.MailServer = '';
                $scope.MailConfigRecords.Priority = '';
                $scope.MailConfigRecords.TTL = '';
                $scope.MailSettingsConfiguration.MailsettingRecords.unshift($scope.MailConfigRecords)

            }

        }
        else if (type == 'MXE' || type == 'FWD') {
            $scope.MailSettingsConfiguration.MailsettingRecords = [];
            $scope.MailConfigRecords = {};
            $scope.MailConfigRecords.RecordName = '';
            $scope.MailConfigRecords.HostName = '';
            $scope.MailConfigRecords.Target = '';
            $scope.MailConfigRecords.TTL = '';
            $scope.MailSettingsConfiguration.MailsettingRecords.unshift($scope.MailConfigRecords)

        }
        else if (type == 'OX') {
            $scope.MailSettingsConfiguration.MailsettingRecords = [];
            $scope.MailConfigRecords = {};
            $scope.MailSettingsConfiguration.MailsettingRecords.unshift($scope.MailConfigRecords)
        }
        //else {

        //}
    }
    //FUNCTION TO GENERATE MAIL SETTINGS 

    //FUNCTION TO REMOVE MAIL SETTINGS
    $scope.RemoveMailSettings = function () {
        $scope.MailSettingType = '';
        $scope.MailSettingsConfiguration = {};
    }
    //FUNCTION TO REMOVE MAIL SETTINGS




}]);;
app.controller('domainChangeFwdEmailAddress', [
    '$scope', '$modalInstance', 'httpRepository', 'pageHelper', '$timeout', 'notificationService', '$filter', '$document', 'slotId', 'forwardedEmailAddressType', 'forwardedEmailAddress', 'emailIdChosen', 'primaryEmail', 'regEmail', 'adminEmail', 'billingEmail', 'techEmail', 'domainName',
    function ($scope, $modalInstance, httpRepository, pageHelper, $timeout, notificationService, $filter, $document, slotId, forwardedEmailAddressType, forwardedEmailAddress, emailIdChosen, primaryEmail, regEmail, adminEmail, billingEmail, techEmail,domainName) {
        //if ($('#opacDiv').length) {
        //    $('#opacDiv').removeClass('disabled-content async-processing');
        //}
        $scope.forwardedEmailAddressType = forwardedEmailAddressType;
        $scope.forwardedEmailAddressTypeforDisplay = forwardedEmailAddressType;
        $scope.NoSearchOption = { minimumResultsForSearch: -1 };
        $scope.selectedtypetext = forwardedEmailAddressType;
        $scope.emailIdChosen = emailIdChosen;
        
        $scope.typeOfEmail = [
                            { value: 'ACCOUNTPRIMARYEMAIL', label: 'Account Primary Email', email: primaryEmail },
                            { value: 'REGISTRANTEMAIL', label: 'Registrant Email', email: regEmail },
                            { value: 'ADMINISTRATIVEEMAIL', label: 'Administrative Email', email: adminEmail },
                            { value: 'BILLINGEMAIL', label: 'Billing Email', email: billingEmail },
                            { value: 'TECHNICALEMAIL', label: 'Technical Email', email: techEmail }
        ];
        $('#ddlForwardingEmail').select2("val", forwardedEmailAddressType);
        $scope.typeChange = function (type) {
            for (var i = 0; i < $scope.typeOfEmail.length; i++) {
                if (type == $scope.typeOfEmail[i].label) {
                    $scope.forwardedEmailAddressType = $scope.typeOfEmail[i].value;
                    $scope.selectedtypetext = $scope.typeOfEmail[i].label;
                    $scope.emailId = $scope.typeOfEmail[i].email;
                    break;
                }
            }
        };
        $scope.typeChange($scope.selectedtypetext);
        $scope.selectedtype = forwardedEmailAddressType;

        $scope.cancelClick = function () {
            $modalInstance.close('');
        };
        $scope.SaveChanges = new pageHelper.AsyncStateBehavior({
            //alert($scope.selectedduration);
            constructor: function () {
                var instance = this.instance;
                instance.onClick = function () {
                    $('.opac').delay(25).queue(function () {
                        $(this).addClass('page-load').css({ 'text-align': 'left', 'padding': '0em', 'opacity': '0.5', 'background-position': 'center 2.5em' });
                    });
                    httpRepository.domainDetails.changeForwardedEmailAddress(domainName,slotId, $scope.forwardedEmailAddressType).then(function (result) {
                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                    });
                }
            },
            onSuccess: function (params) {
                var instance = this.instance;
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
                //alert($scope.selectedtypetext);
                if (params.Result == 'NORIGHTS'){
                    $modalInstance.close(params.Result);

                }
                else
                {
                    $modalInstance.close($scope.selectedtypetext + '~' + $scope.emailId);
                }

            },
            onActive: function () {

            }

        })

    }
]);;
app.controller('domainControlPanelCtrl', ['$scope', '$rootScope', 'httpRepository', 'pageHelper', 'notificationService', '$filter', '$modal', '$q', 'ncGridParams', '$sce', 'ncGridEventNames', '$window', '$location',
    function ($scope, $rootScope, httpRepository, pageHelper, notificationService, $filter, $modal, $q, ncGridParams, $sce, ncGridEventNames, $window, $location) {
        $scope.IsGetCategoriesSuccess = false;
        $scope.dataCategoryInitValues = [];
        $scope.pageHelper = pageHelper;
        $rootScope.pageNotification = new notificationService.instance();
        $scope.pageNotification = $rootScope.pageNotification;
        $scope.DomainName = "";
        $scope.DomainInformationRes = DomainInfoRes;
        $scope.NoSearchOption = { minimumResultsForSearch: -1 };
        httpRepository.domainList.getCategories().then(function (result) {
            $scope.IsGetCategoriesSuccess = true;
            if (result.Result != null) {                
                for (i = 0; i < result.Result.length; i++) {
                    $scope.CategoryItems = {};
                    $scope.CategoryItems.id = result.Result[i].CategoryId;
                    $scope.CategoryItems.text = result.Result[i].CategoryHeader;
                    $scope.dataCategoryInitValues.push($scope.CategoryItems);
                }
            }
        });

        //$scope.UrlSplits = $location.absUrl().split('/');
        //$scope.DomainName = $scope.UrlSplits[$scope.UrlSplits.length - 2];
        //$scope.pageFrom = $scope.UrlSplits[$scope.UrlSplits.length - 1];
        //if ($scope.UrlSplits[$scope.UrlSplits.length - 1] == "") {
        //    $scope.DomainName = $scope.UrlSplits[$scope.UrlSplits.length - 3]
        //    $scope.pageFrom = $scope.UrlSplits[$scope.UrlSplits.length - 2]
        //}

        this.initialize = function (DomainBasicDetails, ViewBagdomainName) {
            $scope.DomainBasicDetails = null;
            if (DomainBasicDetails != null)
            {
                $scope.DomainBasicDetails = JSON.parse(DomainBasicDetails);
            }
            
            if ($scope.DomainBasicDetails != null && $scope.DomainBasicDetails.DomainName != "" && $scope.DomainBasicDetails.DomainName != null) {
                $scope.DomainName = $scope.DomainBasicDetails.DomainName;
            }
            else {
                if ($scope.DomainBasicDetails != null)
                {
                    $scope.subDomainList = $scope.DomainBasicDetails.SubDomainList;
                    $scope.selectedSubDomain = ViewBagdomainName;
                }                
                $scope.DomainName = ViewBagdomainName;
            }

            $scope.rightsUrl = "/Domains/DomainControlPanel/" + $scope.DomainName + "/rights/";
            $scope.dnsUrl = "/Domains/DomainControlPanel/" + $scope.DomainName + "/advancedns";
            $scope.apsUrl = "/Domains/DomainControlPanel/" + $scope.DomainName + "/apps/";
            $scope.domainUrl = "/Domains/DomainControlPanel/" + $scope.DomainName + "/domain/";
            $scope.dnsUrlNew = "/Domains/DomainControlPanel/" + $scope.DomainName + "/advancednsNew";
        }

        $scope.AllotCategory = function (itemID, itemText, parameters) {
            $scope.CategoryCurrentAction = 'ALLOT';
            $scope.AsyncCategoryActions.AllotCategory(parameters[0].domainName, itemText)

        }
        $scope.CreateNewCategory = function (itemID, itemText, parameters) {
            $scope.CategoryCurrentAction = 'CREATE';
            $scope.AsyncCategoryActions.CreateCategory(parameters[0].domainName, itemText)
        }
        $scope.RemoveCategory = function (itemID, itemText, parameters) {
            $scope.CategoryCurrentAction = 'REMOVE';
            $scope.AsyncCategoryActions.RemoveCategory(parameters[0].domainName, itemID)
        }


        $scope.AsyncCategoryActions = new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                instance.AllotCategory = function (domainName, categoryName) {
                    $scope.panelFlag = true;
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                    httpRepository.domainList.allotCategories(domainName, categoryName).then(function (result) {
                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                    });
                }
                instance.CreateCategory = function (domainName, categoryName) {
                    $scope.panelFlag = true;
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                    httpRepository.domainList.createCategories(domainName, categoryName).then(function (result) {
                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                    });
                }
                instance.RemoveCategory = function (domainName, categoryId) {
                    $scope.panelFlag = true;
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                    httpRepository.domainList.removeCategories(domainName, categoryId).then(function (result) {
                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                    });
                }
            },
            onSuccess: function (params) {
                $scope.panelFlag = false;


                var instance = this.instance;

                if (params.Result[0] == "CREATED") {

                    //TO ADD THE NEWLY ADDED CATEGORY IN CATEGORIES DROP DOWNS
                    $scope.Categories = {};
                    $scope.Categories.id = params.Result[2];
                    $scope.Categories.text = params.Result[1];
                    $scope.dataCategoryInitValues.push($scope.Categories);
                    initAddCategories("line1", eval($scope.dataCategoryInitValues));
                    $("#line1").select2("val", $scope.Categories.id);
                }
                if (params.Result[0] == "REMOVED") {                    
                    initAddCategories("line1", eval($scope.dataCategoryInitValues));
                    $("#line1").select2("val", "");
                }
                $scope.pageNotification.stuckNotifications.addSuccess(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
            },
            onActive: function (params) {
                var instance = this.instance;
            },
            onLoading: function (params) {


                var instance = this.instance;
                if ($scope.CategoryCurrentAction == 'ALLOT')
                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading($scope.DomainInformationRes.static_Loading_Category_Chosen, false);
                else if ($scope.CategoryCurrentAction == 'CREATE')
                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading($scope.DomainInformationRes.static_Loading_Category_Creation, false);
                else if ($scope.CategoryCurrentAction == 'REMOVE')
                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading($scope.DomainInformationRes.static_Loading_Category_Removal, false);
            },
            onError: function (params) {
                $scope.panelFlag = false;

                var instance = this.instance;
                $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            },
            onLocked: function (params) {
                var instance = this.instance;
            }
        });

        $scope.changeDomain = function (Domain) {
            $scope.selectedSubDomain = Domain;
            
            $scope.rightsUrl = "/Domains/DomainControlPanel/" + Domain + "/rights/";
            $scope.dnsUrl = "/Domains/DomainControlPanel/" + Domain + "/advancedns";
            $scope.apsUrl = "/Domains/DomainControlPanel/" + Domain + "/apps/";
            $scope.domainUrl = "/Domains/DomainControlPanel/" + Domain + "/domain/";
            $scope.dnsUrlNew = "/Domains/DomainControlPanel/" + Domain + "/advancednsNew";

            window.location.href = "/domains/domaincontrolpanel/" + Domain + "/domain";
        };

        $scope.pageBehavior = new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
            },

            onSuccess: function (params) {
                var instance = this.instance;
            },
            onActive: function (params) {
                var instance = this.instance;
            },
            onLoading: function (params) {
                var instance = this.instance;
                instance.showLoadPanel = true;
            },
            onError: function (params) {
                var instance = this.instance;
            }
        });


        $rootScope.closeLightbox = function () {
            if ($scope.DomainName != '')
                window.location.href = "/domains/domaincontrolpanel/" + $scope.DomainName + "/rights";
        }



    }
]);
app.controller('domainDetailsCtrlOld', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'ncGridEventNames', '$window', 'sslRepository',
function ($scope, $rootScope, httpRepository, $filter, $modal, notificationService, pageHelper, $q, ncGridParams, $sce, ncGridEventNames, $window, sslRepository) {
    //#region Local properties
    $scope.DomainsInfo = DomainInfoRes;
    $scope.dataCategoryInitValues = [];
    $scope.pageNotification = new notificationService.instance();
    $scope.showLoadPanel = true;
    $scope.panelFlag = false;
    $scope.domainEmailRedirectnotificationAlertArguments = { hasClose: true, isAutoHide: true };
    //$scope.forwardedEmailChangedFlag = false;
    this.initialize = function (domainName) {
        if (domainName != "") {
            $scope.GetCategories();
            $scope.pagebehaviour.GetDomainDetails(domainName);
            $scope.panelFlag = false;
            $scope.DomainName = domainName;
        }
    }
    $scope.DomainInformationRes = DomainInfoRes;

    // For Parking Page Area
    $scope.ShowParkingPagePanel = false;
    $scope.ShowParkingPagePanelActionButton = false;
    $scope.ParkingPageStatus = "OFF";
    $scope.showParkingPageTurnOnButton = true;
    $scope.showParkingPageInfoAboutDnsUpdate = false;
    $scope.showParkingPageInfoAboutServiceUpdate = false;
    $scope.ParkingPagehostIDsList = '';
    $scope.TempParkingPagehostIDsList = '';
    $scope.hostIDsListToBeRemoved = '';
    $scope.HavingActiveParkingPageRecords = false;
    $scope.HavingActiveParkingPageRecordsCount = 0;
    // For Parking Page Area

    $scope.refreshToChangeAssociatedEmail = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.onClick = function () {
                //$('#opacDiv').addClass('disabled-content async-processing');
                $scope.panelFlag = true;

                instance.asyncStatus(pageHelper.AsyncStatus.Loading);

                httpRepository.domainDetails.changeWhoIsGuardEmailAddress($scope.DomainName, $scope.slotId).then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                });
            }
        },
        onSuccess: function (params) {
            //$('#opacDiv').removeClass('disabled-content async-processing');
            $scope.panelFlag = false;

            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            if (params != undefined && params != null && params != '') {
                if (params.Result != "NORIGHTS") {
                    $scope.lastRefreshedOn = params.Result.LastEmailUpdatedOn;
                    $scope.associatedEmailAddress = params.Result.WGEmail;

                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInformationRes.success_Alert_WhoisGuardRefreshEmail, {
                        hasClose: true,
                        isAutoHide: true
                    });
                }
                else {
                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addError('User has no rights to perform this action', {
                        hasClose: true,
                        isAutoHide: true
                    });
                }
            }
        },
        onActive: function () {

        },
        onError: function (params) {
            //$('#opacDiv').removeClass('disabled-content async-processing');
            $scope.panelFlag = false;



            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError($scope.DomainInformationRes.failure_Alert_WhoisGuardRefreshEmail, {
                hasClose: true,
                isAutoHide: true
            });
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading($scope.DomainInformationRes.static_Loading_WhoisGuardRefreshEmail, true);

            //instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Loading...', false);
        }

    })
    $scope.setWhoisGuardStatus = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.onClick = function () {
                $scope.panelFlag = true;


                //$('#opacDiv').addClass('disabled-content async-processing');
                instance.asyncStatus(pageHelper.AsyncStatus.Loading);

                //httpRepository.domainDetails.setWhoisGuardStatustoSwitchOnorOff($scope.slotId, $scope.whoisguardEnabled, (($scope.forwardedEmailChangedFlag == false) ? $scope.model.WGAssociatedEmailForwardedTo : $scope.emailIdChosen)).then(function (result) {
                httpRepository.domainDetails.setWhoisGuardStatustoSwitchOnorOff($scope.DomainName, $scope.slotId, $scope.whoisguardEnabled, $scope.emailIdChosen).then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                });
            }
        },
        onSuccess: function (params) {
            $scope.panelFlag = false;


            //$('#opacDiv').removeClass('disabled-content async-processing');
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            if (params != undefined && params != null && params != '') {
                //alert($scope.model.WGActiveStatus);
                if (params.Msg == 'enabled') {
                    $scope.whoisguardEnabled = 'true';
                    $scope.whoisAction = 'OFF';
                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInformationRes.success_Alert_WhoisGuardOn, {
                        hasClose: true,
                        isAutoHide: true
                    });
                }
                else if (params.Msg == 'disabled') {
                    $scope.whoisguardEnabled = 'false';
                    $scope.whoisAction = 'ON';
                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInformationRes.success_Alert_WhoisGuardOff, {
                        hasClose: true,
                        isAutoHide: true
                    });
                }
                else if (params.Msg == 'NORIGHTS') {
                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addError('User has no rights to perform this action', {
                        hasClose: true,
                        isAutoHide: true
                    });
                }
            }
        },
        onActive: function () {

        },
        onError: function (params) {
            $scope.panelFlag = false;


            //$('#opacDiv').removeClass('disabled-content async-processing');
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError($scope.DomainInformationRes.failure_Alert_WhoisGuardOnOff.replace('{[whoisAction]}', $scope.whoisAction), {
                hasClose: true,
                isAutoHide: true
            });
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading($scope.DomainInformationRes.static_Loading_WhoisGuardOnOff.replace('{[whoisAction]}', $scope.whoisAction), true);
            //instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Loading...', false);
        }



    })

    $scope.ChangeForwardedEmailAddressModalPopUpOpened = false;
    $scope.openChangeForwardedEmailAddressModalPopUp = function (editCapabilityType) {
        httpRepository.domainDetails.IsManagerHasRightsToPerformThisAction($scope.DomainName, editCapabilityType).then(function (result) {
            if (!result) {
                $scope.pageNotification.stuckNotifications.addError('User has no rights to perform this action', {
                    hasClose: true,
                    isAutoHide: true
                });
            }
            else {
                //$('#opacDiv').addClass('disabled-content async-processing');
                if (!$scope.ChangeForwardedEmailAddressModalPopUpOpened)
                {
                    var modalInstance = $modal.open({
                        templateUrl: "/Domains/DomainDetails/ChangeForwardedEmailAddressModal",
                        controller: 'domainChangeFwdEmailAddress',
                        size: 'lg',
                        backdrop: 'static',
                        //keyboard: false,

                        resolve: {
                            slotId: function () {
                                return $scope.slotId;
                            },
                            forwardedEmailAddressType: function () {
                                return $scope.forwardedEmailAddressType;
                            },
                            forwardedEmailAddress: function () {
                                return $scope.forwardedEmailAddress;
                            },
                            emailIdChosen: function () {
                                return $scope.emailIdChosen;
                            },
                            primaryEmail: function () {
                                return $scope.primaryEmail;
                            },
                            regEmail: function () {
                                return $scope.RegistrantContact.EmailAddress;
                            },
                            adminEmail: function () {
                                return $scope.AdminContact.EmailAddress;
                            },
                            billingEmail: function () {
                                return $scope.BillingContact.EmailAddress;
                            },
                            techEmail: function () {
                                return $scope.TechContact.EmailAddress;
                            },
                            domainName: function () {
                                return $scope.DomainName;
                            }
                        }
                    });
                    modalInstance.result.then(function (param) {
                        $scope.ChangeForwardedEmailAddressModalPopUpOpened = false;
                        //$('#opacDiv').removeClass('disabled-content async-processing');
                        var instance = this.instance;
                        if (param != undefined && param != null && param != '') {
                            if (param != 'NORIGHTS') {
                                $scope.selectedAddressType = param.split('~')[0];
                                $scope.forwardedEmailAddressType = param.split('~')[0];
                                $scope.emailIdChosen = param.split('~')[1];
                                instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInformationRes.success_Alert_WhoisGuardChangeForwardedEmail, {
                                    hasClose: true,
                                    isAutoHide: true
                                });
                            }
                            else {
                                instance.activeNotification = $scope.pageNotification.stuckNotifications.addError('User has no rights to perform this action', {
                                    hasClose: true,
                                    isAutoHide: true
                                });
                            }
                        }
                    });
                    modalInstance.opened.then(function () {
                        $scope.ChangeForwardedEmailAddressModalPopUpOpened = true;
                    });
                }
                
            }
        });



    }

    // Open Resolve Conflict Redirect Email Modal PopUp
    $scope.IsResolveConflictRedirectEmailModalPopUpOpened = false;
    $scope.openResolveConflictRedirectEmailModalPopUp = function () {
        if (!$scope.model.RedirectEmailViewModel.IsUsingPrivateEmail
            && !$scope.model.RedirectEmailViewModel.IsUsingNamecheapHosting
            && $scope.model.RedirectEmailViewModel.DnsType != 'Custom'
            && ($scope.model.RedirectEmailViewModel.EmailType == 'NONE' || $scope.model.RedirectEmailViewModel.EmailType == 'FWD')) {
            // When domain is using default dns and it has Email Type as NONE or FWD.
            if ($scope.model.RedirectEmailViewModel.EmailType == 'NONE' || $scope.model.RedirectEmailViewModel.EmailType == 'FWD') {
                $scope.RedirectToManagePage($scope.DomainName, $scope.model.RedirectEmailViewModel.EmailType);
            }
        }
        else {
            if (!$scope.IsResolveConflictRedirectEmailModalPopUpOpened)
            {
                var modalInstance = $modal.open({
                    templateUrl: "/Domains/DomainDetails/ResolveConflictRedirectEmailModal",
                    controller: 'domainResolveConflictRedirectEmailCtrl',
                    size: 'lg',
                    backdrop: 'static',
                    resolve: {
                        RedirectEmailViewModel: function () {
                            return $scope.model.RedirectEmailViewModel;
                        },
                        DomainName: function () {
                            return $scope.DomainName;
                        },
                        PageFrom: function () {
                            return 'domaindetails';
                        }
                    }
                });
                modalInstance.result.then(function (param) {
                    $scope.IsResolveConflictRedirectEmailModalPopUpOpened = false;
                    if (param != null && param != '') {
                        var instance = this.instance;
                        $scope.pageNotification.stuckNotifications.addError(param, {
                            hasClose: true,
                            isAutoHide: true
                        });
                    }
                });
                modalInstance.opened.then(function () {
                    $scope.IsResolveConflictRedirectEmailModalPopUpOpened = true;
                });
            }

        }
    }

    $scope.RedirectToManagePage = function (domainName, emailType) {
        var redirectLocationUrl = '/Domains/RedirectEmailList/' + domainName + '/domaindetails';

        if (emailType == 'NONE') {
            // Internally update email type and then redirect to manage page
            httpRepository.domainDetails.resolveConflictSetEmailType(domainName, emailType).then(function (result) {
                if (result.Error == false) {
                    $window.location.href = redirectLocationUrl;
                }
                else {
                    var instance = this.instance;
                    $scope.pageNotification.stuckNotifications.addError(result.Msg, {
                        hasClose: true,
                        isAutoHide: true
                    });
                }

            });
        }
        else if (emailType == 'FWD') {
            // Redirect to manage page
            $window.location.href = redirectLocationUrl;
        }
    }

    // End Resolve Conflict Redirect Email Modal PopUp
    $scope.IsSetEmailRefreshDurationModalPopUpOpened = false;
    $scope.openSetEmailRefreshDurationModalPopUp = function (editCapabilityType) {
        httpRepository.domainDetails.IsManagerHasRightsToPerformThisAction($scope.DomainName, editCapabilityType).then(function (result) {
            if (!result) {
                $scope.pageNotification.stuckNotifications.addError('User has no rights to perform this action', {
                    hasClose: true,
                    isAutoHide: true
                });
            }
            else {
                //$('#opacDiv').addClass('disabled-content async-processing');
                if (!$scope.IsSetEmailRefreshDurationModalPopUpOpened)
                {
                    var modalInstance = $modal.open({
                        templateUrl: "/Domains/DomainDetails/SetEmailRefreshDurationModal",
                        controller: 'domainSetEmailRefreshDurationModal',
                        size: 'lg',
                        backdrop: 'static',
                        //keyboard: false,

                        resolve: {
                            slotId: function () {
                                return $scope.slotId;
                            },
                            duration: function () {
                                return $scope.selectedEmailUpdateDuration;
                            },
                            domainName: function () {
                                return $scope.DomainName;
                            }
                        }
                    });
                    modalInstance.result.then(function (param) {
                        $scope.IsSetEmailRefreshDurationModalPopUpOpened = false;
                        //$('#opacDiv').removeClass('disabled-content async-processing');
                        var instance = this.instance;
                        if (param != undefined && param != null && param != '') {
                            if (param != 'NORIGHTS') {
                                $scope.selectedEmailUpdateDuration = param;
                                instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInformationRes.success_Alert_WhoisGuardRefreshDuration, {
                                    hasClose: true,
                                    isAutoHide: true
                                });
                            }
                            else {
                                instance.activeNotification = $scope.pageNotification.stuckNotifications.addError('User has no rights to perform this action', {
                                    hasClose: true,
                                    isAutoHide: true
                                });
                            }
                        }
                    });
                    modalInstance.opened.then(function () {
                        $scope.IsSetEmailRefreshDurationModalPopUpOpened = true;
                    });
                }

            }

        });
    }
    $scope.resendNotification = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.onClick = function () {
                $scope.panelFlag = true;


                //$('#opacDiv').addClass('disabled-content async-processing');
                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                httpRepository.domainDetails.resendNotificationEmail($scope.domain).then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                });
            }
        },
        onSuccess: function (params) {
            //$('#opacDiv').removeClass('disabled-content async-processing');
            $scope.panelFlag = false;


            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            if (params != undefined && params != null && params != '') {
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInformationRes.success_Alert_RegistrantResendNotification, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
        },
        onActive: function () {

        },
        onError: function (params) {
            $scope.panelFlag = false;


            //$('#opacDiv').removeClass('disabled-content async-processing');
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError($scope.DomainInformationRes.failure_Alert_RegistrantResendNotification, {
                hasClose: true,
                isAutoHide: true
            });
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading($scope.DomainInformationRes.static_Loading_RegistrantResendNotification, true);
            //instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Loading...', false);
        }


    })
    $scope.GetCategories = function () {
        httpRepository.domainList.getCategories().then(function (result) {
            if (result.Result != null) {
                for (i = 0; i < result.Result.length; i++) {
                    $scope.CategoryItems = {};
                    $scope.CategoryItems.id = result.Result[i].CategoryId;
                    $scope.CategoryItems.text = result.Result[i].CategoryHeader;
                    $scope.dataCategoryInitValues.push($scope.CategoryItems);
                }
            }

        });
    }



    $scope.pagebehaviour = new pageHelper.AsyncStateBehavior({

        constructor: function () {
            var instance = this.instance;
            instance.showLoadPanel = true;
            instance.GetDomainDetails = function (domainName) {
                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                httpRepository.domainDetails.getDomainDetails(domainName).then(function (result) {
                    if (result.Result != null) {
                        $scope.model = JSON.parse(result.Result);
                        $scope.DomainName = $scope.model.DomainName;
                        var RegEmailId, AdminEmailId, BillingEmailId, TechEmailId;
                        if ($scope.model.DomainContactSectionViewModel != null && $scope.model.DomainContactSectionViewModel.RegistrantContactDetails != null) {
                            $scope.RegistrantContact = $scope.model.DomainContactSectionViewModel.RegistrantContactDetails;
                            RegEmailId = $scope.RegistrantContact.EmailAddress;
                        }

                        if ($scope.model.DomainContactSectionViewModel != null && $scope.model.DomainContactSectionViewModel.AdminContactDetails != null) {
                            $scope.AdminContact = $scope.model.DomainContactSectionViewModel.AdminContactDetails;
                            AdminEmailId = $scope.AdminContact.EmailAddress;
                        }
                        if ($scope.model.DomainContactSectionViewModel != null && $scope.model.DomainContactSectionViewModel.TechContactDetails != null) {
                            $scope.TechContact = $scope.model.DomainContactSectionViewModel.TechContactDetails;
                            TechEmailId = $scope.TechContact.EmailAddress;
                        }
                        if ($scope.model.DomainContactSectionViewModel != null && $scope.model.DomainContactSectionViewModel.BillingContactDetails != null) {
                            $scope.BillingContact = $scope.model.DomainContactSectionViewModel.BillingContactDetails;
                            BillingEmailId = $scope.BillingContact.EmailAddress;

                        }
                        if ($scope.model.DomainContactSectionViewModel != null && $scope.model.DomainContactSectionViewModel.ExtendedAttributesInfo != null) {
                            $scope.ExtendedAttributesInfo = $scope.model.DomainContactSectionViewModel.ExtendedAttributesInfo;

                            if ($scope.ExtendedAttributesInfo.CcLocality != undefined && $scope.ExtendedAttributesInfo != null && $scope.ExtendedAttributesInfo.CcLocality != '') {
                                sslRepository.sslInfo.GetCountryName($scope.ExtendedAttributesInfo.CcLocality.toUpperCase()).then(function (result) {
                                    if (!result.Error)
                                        $scope.ExtendedAttributesInfo.CountryName = result;
                                });
                            }
                            if ($scope.ExtendedAttributesInfo.RegistrantJoDateDec != undefined && $scope.ExtendedAttributesInfo.RegistrantJoDatePub != undefined) {
                                $scope.ExtendedAttributesInfo.RegistrantJoDateDec = pageHelper.Date.dateFromJson($scope.ExtendedAttributesInfo.RegistrantJoDateDec);
                                $scope.ExtendedAttributesInfo.RegistrantJoDateDec = $filter('date')(new Date($scope.ExtendedAttributesInfo.RegistrantJoDateDec), 'MMM d, yyyy')

                                $scope.ExtendedAttributesInfo.RegistrantJoDatePub = pageHelper.Date.dateFromJson($scope.ExtendedAttributesInfo.RegistrantJoDatePub);
                                $scope.ExtendedAttributesInfo.RegistrantJoDatePub = $filter('date')(new Date($scope.ExtendedAttributesInfo.RegistrantJoDatePub), 'MMM d, yyyy')
                            }
                            if ($scope.ExtendedAttributesInfo.RegistrantBirthDate != undefined) {
                                $scope.ExtendedAttributesInfo.RegistrantBirthDate = pageHelper.Date.dateFromJson($scope.ExtendedAttributesInfo.RegistrantBirthDate);
                                $scope.ExtendedAttributesInfo.RegistrantBirthDate = $filter('date')(new Date($scope.ExtendedAttributesInfo.RegistrantBirthDate), 'MMM d, yyyy')
                            }
                            if ($scope.ExtendedAttributesInfo.RegistrantBirthplace != undefined && $scope.ExtendedAttributesInfo.RegistrantBirthplace != '') {
                                var commaSplit = ',';
                                var contactDetail = [];
                                if ($scope.ExtendedAttributesInfo.RegistrantBirthplace.indexOf(',') > -1) {
                                    contactDetail = $scope.ExtendedAttributesInfo.RegistrantBirthplace.split(commaSplit);
                                    $scope.ExtendedAttributesInfo.placeOfBirth = contactDetail[1];
                                    $scope.ExtendedAttributesInfo.PostalCode = contactDetail[0];
                                }
                                sslRepository.sslInfo.GetCountryName($scope.ExtendedAttributesInfo.RegistrantBirthplace.toUpperCase()).then(function (result) {
                                    if (!result.Error)
                                        $scope.ExtendedAttributesInfo.CountryName = result;
                                });
                            }
                        }

                        $scope.slotId = $scope.model.WGSlotID;
                        //$scope.slotId = 0;
                        //$scope.model.WGActiveStatus = null;

                        $scope.associatedEmailAddress = $scope.model.WGAssociatedEmail;
                        $scope.forwardedEmailAddress = $scope.model.WGAssociatedEmailForwardedTo;
                        $scope.primaryEmail = $scope.model.PrimaryEmailId;

                        $scope.typeOfEmail = [
                            { value: 'ACCOUNTPRIMARYEMAIL', label: 'Account Primary Email', email: $scope.model.PrimaryEmailId },
                            { value: 'REGISTRANTEMAIL', label: 'Registrant Email', email: RegEmailId },
                            { value: 'ADMINISTRATIVEEMAIL', label: 'Administrative Email', email: AdminEmailId },
                            { value: 'BILLINGEMAIL', label: 'Billing Email', email: BillingEmailId },
                            { value: 'TECHNICALEMAIL', label: 'Technical Email', email: TechEmailId }
                        ];
                        $scope.WGForwardedEmailType = '';
                        for (var i = 0; i < $scope.typeOfEmail.length; i++) {
                            if ($scope.model.WGForwardedEmailType == $scope.typeOfEmail[i].value) {
                                $scope.WGForwardedEmailType = $scope.typeOfEmail[i].label;
                                $scope.forwardedEmailAddressType = $scope.typeOfEmail[i].label;
                                $scope.emailIdChosen = $scope.typeOfEmail[i].email;
                                break;
                            }
                        }
                        $scope.selectedAddressType = $scope.WGForwardedEmailType;
                        var matched = false;
                        if ($scope.WGForwardedEmailType == '') {
                            for (var i = 0; i < $scope.typeOfEmail.length; i++) {
                                if ($scope.model.WGAssociatedEmailForwardedTo == $scope.typeOfEmail[i].email) {
                                    $scope.selectedAddressType = $scope.typeOfEmail[i].label;
                                    $scope.WGForwardedEmailType = $scope.typeOfEmail[i].label;
                                    $scope.forwardedEmailAddressType = $scope.typeOfEmail[i].label;
                                    $scope.emailIdChosen = $scope.typeOfEmail[i].email;
                                    matched = true;
                                    break;
                                }
                            }
                            if (matched == false) {
                                $scope.selectedAddressType = 'Account Primary Email';
                                $scope.WGForwardedEmailType = 'Account Primary Email';
                                $scope.forwardedEmailAddressType = 'Account Primary Email';
                                $scope.emailIdChosen = $scope.model.PrimaryEmailId;
                            }
                        }
                        $scope.selectedEmailUpdateDuration = $scope.model.WGEmailChangeDuration;
                        $scope.lastRefreshedOn = $scope.model.WGLastEmailUpdateOnString;//'Apr 16, 2015, 11:45 AM (EST)';
                        if ($scope.lastRefreshedOn == 'Jan 01, 0001, 12:00 AM (EST)') {
                            $scope.lastRefreshedOn = 'Not Updated';
                        }
                        $scope.domain = domainName;
                        if ($scope.model.WGActiveStatus == 1) {
                            $scope.whoisguardEnabled = 'true';
                            $scope.whoisAction = 'OFF';


                        }
                        else if ($scope.model.WGActiveStatus == 0) {
                            $scope.whoisguardEnabled = 'false';
                            $scope.whoisAction = 'ON';

                        }
                        else {
                            $scope.whoisguardEnabled = 'NA';
                            $scope.whoisAction = 'NA';

                        }

                        // For Parking page
                        //    if ($scope.model.IsUsingNamecheapinHosting || $scope.model.NameserversType.toUpperCase() == 'CUSTOM') {
                        //        $scope.ShowParkingPagePanel = false;
                        //    }
                        //    else {
                        //        $scope.ShowParkingPagePanel = true;
                        //    }



                        // For Parking page
                        if ($scope.model.IsUsingNamecheapinHosting) {
                            $scope.ShowParkingPagePanel = false;
                        }
                        else {
                            if ($scope.model.NameserversType != null && $scope.model.NameserversType != undefined && $scope.model.NameserversType != '') {
                                if ($scope.model.NameserversType.toUpperCase() == 'CUSTOM') {
                                    $scope.ShowParkingPagePanel = false;
                                }
                                else {
                                    $scope.ShowParkingPagePanel = true;
                                }
                            }
                            else {
                                $scope.ShowParkingPagePanel = true;
                            }
                        }

                        if ($scope.model.IsDomainOwner || $scope.model.IsManagerHasHostsRights) {
                            $scope.ShowParkingPagePanelActionButton = true;
                        }

                        if ($scope.model.UrlRedirectModel != null) {
                            $scope.showParkingPageInfoAboutDnsUpdate = $scope.model.RedirectEmailViewModel.AtWwwwHasOtherRecordTypeSet;
                            $scope.showParkingPageInfoAboutServiceUpdate = $scope.model.RedirectEmailViewModel.IsHostRecordLocked;

                            $scope.hostIDsListToBeRemoved = '';
                            if ($scope.model.UrlRedirectModel.HostList != null) {
                                for (var i = 0; i < $scope.model.UrlRedirectModel.HostList.length; i++) {

                                    if ($scope.model.UrlRedirectModel.HostList[i].Name == '@') {
                                        if (!($scope.model.UrlRedirectModel.HostList[i].Type == 'URL' && $scope.model.UrlRedirectModel.HostList[i].Address.indexOf($scope.model.DomainName) >= 0)) {
                                            if ($scope.model.UrlRedirectModel.HostList[i].Type == 'A' || $scope.model.UrlRedirectModel.HostList[i].Type == 'AAAA' || $scope.model.UrlRedirectModel.HostList[i].Type == 'CNAME' ||
                                                $scope.model.UrlRedirectModel.HostList[i].Type == 'URL' || $scope.model.UrlRedirectModel.HostList[i].Type == 'FRAME' || $scope.model.UrlRedirectModel.HostList[i].Type == 'URL301'
                                                ) {
                                                $scope.hostIDsListToBeRemoved = $scope.hostIDsListToBeRemoved + $scope.model.UrlRedirectModel.HostList[i].HostId + ',';
                                            }
                                        }
                                    }

                                    if ($scope.model.UrlRedirectModel.HostList[i].Name.toUpperCase() == 'WWW') {

                                        if (!(($scope.model.UrlRedirectModel.HostList[i].Type.toUpperCase() == 'CNAME') && $scope.model.UrlRedirectModel.HostList[i].Address == 'parkingpage.namecheap.com.')) {
                                            if ($scope.model.UrlRedirectModel.HostList[i].Type == 'A' || $scope.model.UrlRedirectModel.HostList[i].Type == 'AAAA' || $scope.model.UrlRedirectModel.HostList[i].Type == 'CNAME' ||
                                                $scope.model.UrlRedirectModel.HostList[i].Type == 'URL' || $scope.model.UrlRedirectModel.HostList[i].Type == 'FRAME' || $scope.model.UrlRedirectModel.HostList[i].Type == 'URL301'
                                                ) {
                                                $scope.hostIDsListToBeRemoved = $scope.hostIDsListToBeRemoved + $scope.model.UrlRedirectModel.HostList[i].HostId + ',';
                                            }
                                        }
                                    }

                                    if (($scope.model.UrlRedirectModel.HostList[i].Name == '@' && $scope.model.UrlRedirectModel.HostList[i].Type == 'URL' && $scope.model.UrlRedirectModel.HostList[i].Address.indexOf($scope.model.DomainName) >= 0) || (($scope.model.UrlRedirectModel.HostList[i].Name.toUpperCase() == 'WWW') && ($scope.model.UrlRedirectModel.HostList[i].Type.toUpperCase() == 'CNAME') && $scope.model.UrlRedirectModel.HostList[i].Address == 'parkingpage.namecheap.com.')) {
                                        $scope.ParkingPagehostIDsList = $scope.ParkingPagehostIDsList + $scope.model.UrlRedirectModel.HostList[i].HostId + ',';

                                        if ($scope.model.UrlRedirectModel.HostList[i].IsActive) {
                                            $scope.HavingActiveParkingPageRecords = true;
                                            $scope.HavingActiveParkingPageRecordsCount = $scope.HavingActiveParkingPageRecordsCount + 1;
                                        }
                                        else {
                                            if ($scope.model.UrlRedirectModel.IsShowEditButton) {
                                                $scope.model.UrlRedirectModel.IsShowEditButton = false;
                                                $scope.model.UrlRedirectModel.IsShowSetupButton = true;
                                                $scope.model.RedirectTypeInfo = "";
                                            }
                                        }
                                    }
                                }

                                if ($scope.HavingActiveParkingPageRecords && $scope.HavingActiveParkingPageRecords != undefined) {
                                    if ($scope.model.UrlRedirectModel.IsShowEditButton) {
                                        $scope.model.UrlRedirectModel.IsShowEditButton = false;
                                        $scope.model.UrlRedirectModel.IsShowSetupButton = true;
                                        $scope.model.RedirectTypeInfo = "";
                                    }
                                }
                            }
                            $scope.hostIDsListToBeRemoved = $scope.hostIDsListToBeRemoved.replace(/,\s*$/, "");
                            $scope.ParkingPagehostIDsList = $scope.ParkingPagehostIDsList.replace(/,\s*$/, "");

                            if ($scope.ParkingPagehostIDsList.split(',').length < 2) {
                                $scope.TempParkingPagehostIDsList = $scope.ParkingPagehostIDsList;
                                $scope.ParkingPagehostIDsList = '';
                                $scope.HavingActiveParkingPageRecords = false;
                            }

                            if (($scope.model.RedirectTypeInfo == 'Parking Page in use' || $scope.HavingActiveParkingPageRecords) && $scope.HavingActiveParkingPageRecordsCount > 1) {
                                $scope.ParkingPageStatus = "ON";
                                $scope.showParkingPageTurnOnButton = false;
                            }
                        }
                    }
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                });
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            if (params.Msg != "") {
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }

            $scope.showLoadPanel = false;

        },
        onActive: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            if (params.Msg != "") {
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
        },
        onLoading: function (params) {
            //var instance = this.instance;
            //instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Loading...', false);
        }
    });



    $scope.AllotCategory = function (itemID, itemText, parameters) {
        $scope.CategoryCurrentAction = 'ALLOT';
        $scope.AsyncCategoryActions.AllotCategory(parameters[0].domainName, itemText)

    }
    $scope.CreateNewCategory = function (itemID, itemText, parameters) {
        $scope.CategoryCurrentAction = 'CREATE';
        $scope.AsyncCategoryActions.CreateCategory(parameters[0].domainName, itemText)
    }
    $scope.RemoveCategory = function (itemID, itemText, parameters) {
        $scope.CategoryCurrentAction = 'REMOVE';
        $scope.AsyncCategoryActions.RemoveCategory(parameters[0].domainName, itemID)
    }
    $scope.AsyncCategoryActions = new pageHelper.AsyncStateBehavior({
        constructor: function () {



            var instance = this.instance;
            instance.AllotCategory = function (domainName, categoryName) {
                $scope.panelFlag = true;
                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                httpRepository.domainList.allotCategories(domainName, categoryName).then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                });
            }
            instance.CreateCategory = function (domainName, categoryName) {
                $scope.panelFlag = true;
                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                httpRepository.domainList.createCategories(domainName, categoryName).then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                });
            }
            instance.RemoveCategory = function (domainName, categoryId) {
                $scope.panelFlag = true;
                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                httpRepository.domainList.removeCategories(domainName, categoryId).then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                });
            }
        },
        onSuccess: function (params) {
            $scope.panelFlag = false;


            var instance = this.instance;

            if (params.Result[0] == "CREATED") {

                //TO ADD THE NEWLY ADDED CATEGORY IN CATEGORIES DROP DOWNS
                $scope.Categories = {};
                $scope.Categories.id = params.Result[2];
                $scope.Categories.text = params.Result[1];
                $scope.dataCategoryInitValues.push($scope.Categories);
                initAddCategories("line1", eval($scope.dataCategoryInitValues));
                $("#line1").select2("val", $scope.Categories.id);

            }
            $scope.pageNotification.stuckNotifications.addSuccess(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
        },
        onLoading: function (params) {


            var instance = this.instance;
            if ($scope.CategoryCurrentAction == 'ALLOT')
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading($scope.DomainInformationRes.static_Loading_Category_Chosen, false);
            else if ($scope.CategoryCurrentAction == 'CREATE')
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading($scope.DomainInformationRes.static_Loading_Category_Creation, false);
            else if ($scope.CategoryCurrentAction == 'REMOVE')
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading($scope.DomainInformationRes.static_Loading_Category_Removal, false);
        },
        onError: function (params) {
            $scope.panelFlag = false;

            var instance = this.instance;
            $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });
        },
        onLocked: function (params) {
            var instance = this.instance;
        }
    });


    $scope.autoRenewClick = new pageHelper.AsyncStateBehavior({

        constructor: function () {
            var instance = this.instance;

            instance.domainWhoIsAutoRenew = function (autoRenewFor, domainName, isDomainAutoRenew, isWGAutoRenew) {
                $scope.panelFlag = true;
                $scope.AutoRenewFor = autoRenewFor;
                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                httpRepository.domainList.domainWhoIsAutoRenew(autoRenewFor, domainName, isDomainAutoRenew, isWGAutoRenew).then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                });
            }
        },
        onSuccess: function (params) {
            $scope.panelFlag = false;

            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            $scope.pageNotification.stuckNotifications.addSuccess(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });

        },
        onActive: function (params) {
            var instance = this.instance;
            var result = params;
        },
        onLoading: function (params) {
            var instance = this.instance;
            if ($scope.AutoRenewFor == 'DOMAIN')
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading($scope.DomainInformationRes.static_Loading_DomainAutoRenewEnableDisable, false);
            else
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading($scope.DomainInformationRes.static_Loading_WhoisGuardAutoRenewEnableDisable, false);

        },
        onLocked: function (params) {
            var instance = this.instance;
            var result = params;
        },
        onError: function (params) {
            $scope.panelFlag = false;

            $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });


    //Cancel Marketplace Listing Call popup
    $scope.IsChooseMarketPlaceListingModalPopUpOpened = false;
    $scope.SellDomainInfo = {};
    $scope.openChooseMarketPlaceListingModalPopUp = function (domainName, mpListingId) {
        if (!$scope.IsChooseMarketPlaceListingModalPopUpOpened)
        {
            var modalInstance = $modal.open({
                templateUrl: "/Domains/MarketPlaceListingModal/",
                controller: 'marketplaceCancelCtrl',
                size: 'lg',
                backdrop: 'static',
                resolve: {
                    sectionViewModal: function () {
                        $scope.SellDomainInfo.DomainName = domainName;
                        $scope.SellDomainInfo.ListingId = mpListingId;
                        return $scope.SellDomainInfo;
                    }
                }
            });

            modalInstance.result.then(function (msg) {
                $scope.IsChooseMarketPlaceListingModalPopUpOpened = false;
            });
            modalInstance.opened.then(function () {
                $scope.IsChooseMarketPlaceListingModalPopUpOpened = true;
            });
        }

    }


    function getExtendAttribute(model) {
        if (model != null) {
            var tld = model.Tld.toLowerCase().replace(".", "");;
            if (tld == "asia") {
                $scope.ExtendedAttribute.AsiaExtendedAttributesInfo.ContactType = model.ContactType;
                if (model.ContactType == "CED") {
                    $scope.ExtendedAttribute.AsiaExtendedAttributesInfo.LegalEntityType = model.LegalEntityType;
                    $scope.ExtendedAttribute.AsiaExtendedAttributesInfo.LocalityCity = model.City;
                    $scope.ExtendedAttribute.AsiaExtendedAttributesInfo.LocalitySp = model.LocalitySp;
                    $scope.ExtendedAttribute.AsiaExtendedAttributesInfo.CcLocality = model.CcLocality;
                    $scope.ExtendedAttribute.AsiaExtendedAttributesInfo.IdentForm = model.IdentForm;
                    $scope.ExtendedAttribute.AsiaExtendedAttributesInfo.OtherIdentForm = model.OtherIdentForm;
                    $scope.ExtendedAttribute.AsiaExtendedAttributesInfo.OtherLegalType = model.OtherLegalType;
                    $scope.ExtendedAttribute.AsiaExtendedAttributesInfo.IdentNumber = model.IdentNumber;
                }
            }
            else if (tld == "nu") {
                $scope.ExtendedAttribute.NUExtendedAttributesInfo.OrgNo = model.OrgNo;
                $scope.ExtendedAttribute.NUExtendedAttributesInfo.VatNo = model.VatNo;
            }
            else if (tld == "xxx") {
                $scope.ExtendedAttribute.XXXExtendedAttributesInfo.MemberId = model.MemberId;
                //$scope.ExtendedAttributeAPI.XXXExtendedAttributesInfo.XxxResolving = model.Resolving;
            }
                //else if (tld == "ca") {
                //    $scope.ExtendedAttribute.CAExtendedAttributesInfo.CIRAWhois = model.CIRAWhois;
                //    $scope.ExtendedAttribute.CAExtendedAttributesInfo.CIRALanguage = model.CIRALanguage;
                //    $scope.ExtendedAttribute.CAExtendedAttributesInfo.CIRAType = model.CIRAType;
                //    $scope.ExtendedAttribute.CAExtendedAttributesInfo.CiraAgreementValue = "Y";
                //}
            else if (tld == "ca") {
                var whoisDisplayText = "";
                $scope.ExtendedAttribute.CAExtendedAttributesInfo.CIRALanguage = model.CIRALanguage;
                $scope.ExtendedAttribute.CAExtendedAttributesInfo.CIRAType = model.CIRAType;
                $scope.ExtendedAttribute.CAExtendedAttributesInfo.CiraAgreementValue = "Y";

                if ($scope.ExtendedAttribute.CAExtendedAttributesInfo.CIRAWhois != "CCT"
                    && $scope.ExtendedAttribute.CAExtendedAttributesInfo.CIRAWhois != "RES"
                     && $scope.ExtendedAttribute.CAExtendedAttributesInfo.CIRAWhois != "ABO"
                     && $scope.ExtendedAttribute.CAExtendedAttributesInfo.CIRAWhois != "LGR") {
                    whoisDisplayText = "Full";
                }
                else whoisDisplayText = model.CIRAWhois;

                $scope.ExtendedAttribute.CAExtendedAttributesInfo.CIRAWhois = whoisDisplayText;
            }
            else if (tld == "us") {
                $scope.ExtendedAttribute.USExtendedAttributesInfo.RegistrantNexus = model.RegistrantNexus;
                $scope.ExtendedAttribute.USExtendedAttributesInfo.RegistrantNexusCountry = model.RegistrantNexusCountry;
                $scope.ExtendedAttribute.USExtendedAttributesInfo.RegistrantPurpose = model.RegistrantPurpose;
            }
            else if (tld == "uk") {
                $scope.ExtendedAttribute.UkExtendedAttributesInfo.UKLegalType = model.UKLegalType;
                $scope.ExtendedAttribute.UkExtendedAttributesInfo.CompanyID = model.CompanyID;
                $scope.ExtendedAttribute.UkExtendedAttributesInfo.UKRegisteredfor = model.Registeredfor;
                $scope.ExtendedAttribute.UkExtendedAttributesInfo.UKRegOptOut = model.RegOptOut;
            }
            else if (tld == "couk") {
                $scope.ExtendedAttribute.COUKExtendedAttributesInfo.UKLegalType = model.UKLegalType;
                $scope.ExtendedAttribute.COUKExtendedAttributesInfo.CompanyID = model.CompanyID;
                $scope.ExtendedAttribute.COUKExtendedAttributesInfo.Registeredfor = model.Registeredfor;
                $scope.ExtendedAttribute.COUKExtendedAttributesInfo.RegOptOut = model.RegOptOut;
            }
            else if (tld == "meuk") {
                $scope.ExtendedAttribute.MEUKExtendedAttributesInfo.UKLegalType = model.UKLegalType;
                $scope.ExtendedAttribute.MEUKExtendedAttributesInfo.CompanyID = model.CompanyID;
                $scope.ExtendedAttribute.MEUKExtendedAttributesInfo.Registeredfor = model.Registeredfor;
                $scope.ExtendedAttribute.MEUKExtendedAttributesInfo.RegOptOut = model.RegOptOut;
            }
            else if (tld == "orguk") {
                $scope.ExtendedAttribute.ORGUKExtendedAttributesInfo.UKLegalType = model.UKLegalType;
                $scope.ExtendedAttribute.ORGUKExtendedAttributesInfo.CompanyID = model.CompanyID;
                $scope.ExtendedAttribute.ORGUKExtendedAttributesInfo.Registeredfor = model.Registeredfor;
                $scope.ExtendedAttribute.ORGUKExtendedAttributesInfo.RegOptOut = model.RegOptOut;
            }
        }
    }
    $scope.IsChooseExtendedAttributeModalPopUpOpened = false;
    $scope.openChooseExtendedAttributeModalPopUp = function () {
        if (!$scope.IsChooseExtendedAttributeModalPopUpOpened)
        {
            var modalInstance = $modal.open({
                templateUrl: "/Domains/ChooseExtendedModal/",
                controller: 'ChooseExtendedAttributeCtrl',
                size: 'lg',
                backdrop: 'static',
                resolve: {
                    sectionViewModal: function () {
                        return $scope.model;
                    }
                }
            });

            modalInstance.result.then(function (model) {
                $scope.IsChooseExtendedAttributeModalPopUpOpened = false;
                //if (model != 'cancel') {
                //    $scope.DomainContactsOverviewModel.ContactModificationType = 'Others';
                //    getExtendAttribute(model);
                //}
            });
            modalInstance.opened.then(function () {
                $scope.IsChooseExtendedAttributeModalPopUpOpened = true;
            });
        }

    }

    $scope.IsForwarderModalOpened = false;
    $scope.openForwarderModal = function (action, mailBoxName, destinationEmail, id, index, editCapabilityType) {

        httpRepository.domainDetails.IsManagerHasRightsToPerformThisAction($scope.DomainName, editCapabilityType).then(function (result) {
            if (result) {
                if (!$scope.IsForwarderModalOpened)
                {
                    var modalInstance = $modal.open({
                        templateUrl: "/Domains/ForwarderModalPopup",
                        controller: 'domainEmailRedirectActionCtrl',
                        size: 'lg',
                        backdrop: 'static',
                        //keyboard: false,

                        resolve: {
                            domainName: function () {
                                return $scope.DomainName;
                            },

                            mailBoxName: function () {
                                return mailBoxName;
                            },
                            mailBoxId: function () {
                                return id;
                            },
                            forwardTo: function () {
                                return destinationEmail;
                            },
                            action: function () {
                                return action;
                            },
                            title: function () {
                                var modaltitle = '';
                                if (action == 'add') {
                                    title = $scope.DomainsInfo.static_Modal_Title_AddForwarder;
                                }
                                else if (action == 'edit') {
                                    title = $scope.DomainsInfo.static_Modal_Title_EditForwarder;

                                }
                                return title;
                            },
                            index: function () {
                                return index;
                            }
                        }
                    });
                    modalInstance.result.then(function (model) {
                        $scope.IsForwarderModalOpened = false;
                        var instance = this.instance;

                        if (model != null && model != undefined && model != '') {
                            if (model != 'NORIGHTS') {
                                if (model.Call == 'Success') {
                                    var message = '';

                                    if (action == 'add') {
                                        message = $scope.DomainsInfo.success_Contextual_AddForwarder.replace('{Forwarder}', model.mailBoxName + '@' + $scope.DomainName);
                                    }
                                    else if (action == 'edit') {
                                        message = $scope.DomainsInfo.success_Contextual_EditForwarder.replace('{Forwarder}', model.oldMailBoxName + '@' + $scope.DomainName);
                                    }

                                    $scope.pageNotification.stuckNotifications.addSuccess(message, $scope.domainEmailRedirectnotificationAlertArguments);
                                    window.location.href = "/Domains/DomainControlPanel/" + $scope.DomainName + "/domain";
                                }
                                else if (model.Call == 'Error') {
                                    if (model.SameEntryFlag != 'SameEntry') {

                                        $scope.pageNotification.stuckNotifications.addError(model.errMesg, $scope.domainEmailRedirectnotificationAlertArguments);
                                    }
                                    else {
                                        $scope.pageNotification.stuckNotifications.addWarning('Forwarder cannot be duplicated.', $scope.domainEmailRedirectnotificationAlertArguments);

                                    }
                                }
                            }
                            else {
                                $scope.pageNotification.stuckNotifications.addError('User has no rights to perform this action', {
                                    hasClose: true,
                                    isAutoHide: true
                                });
                            }
                        }
                    });
                    modalInstance.opened.then(function () {
                        $scope.IsForwarderModalOpened = true;
                    });
                }


            }
            else {
                $scope.pageNotification.stuckNotifications.addError('User has no rights to perform this action', {
                    hasClose: true,
                    isAutoHide: true
                });
            }
        });
    }

    $scope.openParkingPageModal = function (action) {
        var domainName = $scope.DomainName;
        // if action is turn on then open the model window else process internally.            
        if (action == 'OFF') {
            $scope.pageNotification.stuckNotifications.clear();
            $scope.pageNotification.stuckNotifications.addLoading($scope.DomainsInfo.static_TurningOffParkingPageLoading, false);

            httpRepository.domainDns.turningOnOrOffHostRecords($scope.ParkingPagehostIDsList, false, domainName).then(function (result) {
                if (result.Error) {
                    $scope.pageNotification.stuckNotifications.clear();
                    $scope.pageNotification.stuckNotifications.addError($scope.DomainsInfo.error_TurnedOffParkingPage, { hasClose: true, isAutoHide: true })
                }
                else {
                    $scope.pageNotification.stuckNotifications.clear();
                    $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainsInfo.success_TurnedOffParkingPage, { hasClose: true, isAutoHide: true })
                    $scope.ParkingPageStatus = "OFF";
                    $scope.showParkingPageTurnOnButton = true;
                    setTimeout(function () { location.reload(); }, 1000); // Reload with delay
                }
            });
        }
        else if (action == 'ON') {
            if ($scope.showParkingPageInfoAboutDnsUpdate || $scope.showParkingPageInfoAboutServiceUpdate) {
                var modalInstance = $modal.open
                ({
                    templateUrl: "/Domains/ParkingPageModalPopup",
                    controller: 'domainParkingPageActionCtrl',
                    size: 'lg',
                    backdrop: 'static',
                    resolve: {
                        domainName: function () {
                            return domainName;
                        },
                        showParkingPageInfoAboutDnsUpdate: function () {
                            return $scope.showParkingPageInfoAboutDnsUpdate;
                        },
                        showParkingPageInfoAboutServiceUpdate: function () {
                            return $scope.showParkingPageInfoAboutServiceUpdate;
                        },
                        ParkingPagehostIDsList: function () {
                            return $scope.ParkingPagehostIDsList;
                        },
                        TempParkingPagehostIDsList: function () {
                            return $scope.TempParkingPagehostIDsList;
                        },
                        hostIDsListToBeRemoved: function () {
                            return $scope.hostIDsListToBeRemoved;
                        }
                    }
                });
                modalInstance.result.then(function (param) {
                    if (param != null && param != '') {
                        var instance = this.instance;
                        $scope.pageNotification.stuckNotifications.clear();

                        if (param.Call == 'Success') {
                            $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainsInfo.success_Site_ParkingPageTurnOn, { hasClose: true, isAutoHide: true });
                            $scope.ParkingPageStatus = "ON";
                            $scope.showParkingPageTurnOnButton = false;
                            setTimeout(function () { location.reload(); }, 1000); // Reload with delay
                        }
                        else if (param.Call == 'Error') {
                            $scope.pageNotification.stuckNotifications.addError($scope.DomainsInfo.error_Site_ParkingPageTurnOn, { hasClose: true, isAutoHide: true });
                        }
                    }
                });
            }
            else {
                $scope.pageNotification.stuckNotifications.clear();
                $scope.pageNotification.stuckNotifications.addLoading($scope.DomainsInfo.static_TurningOnParkingPageLoading, false);

                // Check if parking page records already exists
                var IsPPrecordsExist = ($scope.ParkingPagehostIDsList == '') ? false : true;

                // If Parking page record already exists then just enable it 
                if (IsPPrecordsExist) {
                    httpRepository.domainDns.turningOnOrOffHostRecords($scope.ParkingPagehostIDsList, true, domainName).then(function (result) {
                        if (result.Error) {
                            $scope.pageNotification.stuckNotifications.clear();
                            $scope.pageNotification.stuckNotifications.addError($scope.DomainsInfo.error_Site_ParkingPageTurnOn, { hasClose: true, isAutoHide: true })
                        }
                        else {
                            if ($scope.hostIDsListToBeRemoved != '') {
                                httpRepository.domainDns.parkingPageRemoveHostRecord($scope.hostIDsListToBeRemoved, domainName).then(function (result) {
                                    if (result.Error == true) {
                                        $scope.pageNotification.stuckNotifications.clear();
                                        $scope.pageNotification.stuckNotifications.addError($scope.DomainsInfo.error_Site_ParkingPageTurnOn, { hasClose: true, isAutoHide: true })
                                    }
                                    else {
                                        $scope.pageNotification.stuckNotifications.clear();
                                        $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainsInfo.success_Site_ParkingPageTurnOn, { hasClose: true, isAutoHide: true })
                                        $scope.ParkingPageStatus = "ON";
                                        $scope.showParkingPageTurnOnButton = false;
                                        setTimeout(function () { location.reload(); }, 1000); // Reload with delay
                                    }
                                });
                            }
                            else {
                                $scope.pageNotification.stuckNotifications.clear();
                                $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainsInfo.success_Site_ParkingPageTurnOn, { hasClose: true, isAutoHide: true })
                                $scope.ParkingPageStatus = "ON";
                                $scope.showParkingPageTurnOnButton = false;
                                setTimeout(function () { location.reload(); }, 1000); // Reload with delay
                            }
                        }
                    });
                }
                    //Create it (Remove all other @ and www records before create)
                else {
                    httpRepository.domainDns.parkingPageAddHostRecord(domainName).then(function (result) {
                        if (result.Error) {
                            $scope.pageNotification.stuckNotifications.clear();
                            $scope.pageNotification.stuckNotifications.addError($scope.DomainsInfo.error_Site_ParkingPageTurnOn, { hasClose: true, isAutoHide: true })
                        }
                        else {
                            if ($scope.hostIDsListToBeRemoved != '') {
                                httpRepository.domainDns.parkingPageRemoveHostRecord($scope.hostIDsListToBeRemoved, domainName).then(function (result) {
                                    if (result.Error == true) {
                                        $scope.pageNotification.stuckNotifications.clear();
                                        $scope.pageNotification.stuckNotifications.addError($scope.DomainsInfo.error_Site_ParkingPageTurnOn, { hasClose: true, isAutoHide: true })
                                    }
                                    else {
                                        $scope.pageNotification.stuckNotifications.clear();
                                        $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainsInfo.success_Site_ParkingPageTurnOn, { hasClose: true, isAutoHide: true })
                                        $scope.ParkingPageStatus = "ON";
                                        $scope.showParkingPageTurnOnButton = false;
                                        setTimeout(function () { location.reload(); }, 1000); // Reload with delay
                                    }
                                });
                            }
                            else {
                                $scope.pageNotification.stuckNotifications.clear();
                                $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainsInfo.success_Site_ParkingPageTurnOn, { hasClose: true, isAutoHide: true })
                                $scope.ParkingPageStatus = "ON";
                                $scope.showParkingPageTurnOnButton = false;
                                setTimeout(function () { location.reload(); }, 1000); // Reload with delay
                            }
                        }
                    });
                }
            }
        }
    }
}]);;
app.controller('domainDetailsCtrl', [
	'$scope', '$rootScope', 'httpRepository', '$filter', '$modal', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'ncGridEventNames', '$window', 'sslRepository', 'advansedDnsModelService', 'promiceQueue', 'domainTransferInService', 'dspAutoRenewService','$timeout',
function ($scope, $rootScope, httpRepository, $filter, $modal, notificationService, pageHelper, $q, ncGridParams, $sce, ncGridEventNames, $window, sslRepository, advansedDnsModelService, promiceQueue, domainTransferInService, dspAutoRenewService, $timeout) {
		$scope.IsWildCardExist = false;
		$scope.IsCatchAllExist = false;
		$scope.pageHelper = pageHelper;
		$scope.pageNotification = new notificationService.instance();
		$scope.redirectURLPageNotification = new notificationService.instance();
		$scope.redirectEmailPageNotification = new notificationService.instance();
		$scope.NoSearchOption = { minimumResultsForSearch: -1 };
		$scope.DomainsInfo = DomainInfoRes;
		$scope.DomainInformationRes = DomainInfoRes;
		$scope.DomainDnsValidation = DomainDnsValidation;
		$scope.ErrorMessageRes = ErrorMessageRes;
		$scope.emailpattern = nc_Val_EmailPatternForAddForwarder;
		$scope.DestinationUrlPattern = advansedDnsModelService.validationPattern.url;
		$scope.IsDomainExpired = false;

		$scope.actionQueue = new promiceQueue();

		$scope.recordState = {
			active: "",
			editing: "edit",
			creating: "new",
		}
		$scope.listType = {
			DomainRedirect: 0,
			EmailRedirect: 1
		}

		$scope.isPromtEditRecord = true;
		$scope.isPromtRemoveRecord = true;
		var defaultNS = "";

		$scope.disablePromtRemoveRecord = function() {
			$scope.isPromtRemoveRecord = false;
			angular.element(".prompt-tip.remove-tip").each(function(element) {
				angular.element(element).remove();
			});
		}
		$scope.disablePromtEditRecord = function() {
			$scope.isPromtEditRecord = false;
			angular.element(".prompt-tip.locked-tip").each(function(element) {
				angular.element(element).remove();
			});
		}

		//showHide
		$scope.invisible = false;
		$scope.visible = true;
		$scope.display = false;
		$scope.WGDetailShowHide = function(value) {
			if (value == true) {
				$scope.display = true;
				$scope.invisible = true;
				$scope.visible = false;
			} else {
				$scope.visible = true;
				$scope.display = false;
				$scope.invisible = false;
			}
		}

		this.initialize = function(DCPModel) {
		    $scope.dcpmodeldata = DCPModel;;
		    $scope.is3dPartyDomain = ($scope.dcpmodeldata.IsServiceOwner && !$scope.dcpmodeldata.IsNamecheapDomain) || $scope.dcpmodeldata.IsHostedDomain;
			$scope.transferInPageBehavior.Load(DCPModel);
			if ($scope.dcpmodeldata != undefined && $scope.dcpmodeldata != null) {
				if ($scope.dcpmodeldata.DomainBasicDetails.DomainName != undefined && $scope.dcpmodeldata.DomainBasicDetails.DomainName != "" && $scope.dcpmodeldata.DomainBasicDetails.DomainName != null) {
					$scope.DomainName = $scope.dcpmodeldata.DomainBasicDetails.DomainName;
				} else {
					$scope.DomainName = $scope.dcpmodeldata.DomainBasicDetails.Domain;
				}


				if ($scope.dcpmodeldata.DomainTransfer != null && $scope.dcpmodeldata.DomainTransfer != undefined) {
					$scope.isEligibleForTransferINDetail = true;
					$scope.siteServerNameUrl = $scope.dcpmodeldata.DomainTransfer.SiteServerNameUrl + "domains/transfer/results.aspx?domainlist=" + $scope.DomainName;
				}

				if ($scope.DomainName != "") {
					$scope.pageBehavior.GetDomainDetailsTabView($scope.DomainName);
					$scope.panelFlag = false;
				}
			}
		}
		$scope.refreshToChangeAssociatedEmail = new pageHelper.AsyncStateBehavior({
			constructor: function() {
				var instance = this.instance;
				instance.onClick = function() {
					$scope.panelFlag = true;
					instance.asyncStatus(pageHelper.AsyncStatus.Loading);
					httpRepository.domainDetails.changeWhoIsGuardEmailAddress($scope.DomainName, $scope.slotId).then(function(result) {
						instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
					});
				}
			},
			onSuccess: function(params) {
				$scope.panelFlag = false;
				var instance = this.instance;
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
				if (params != undefined && params != null && params != '') {
					if (params.Result != "NORIGHTS") {
						$scope.associatedEmailAddress = params.Result;
						instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInformationRes.success_Alert_WhoisGuardRefreshEmail, {
							hasClose: true,
							isAutoHide: true
						});
					} else {
						instance.activeNotification = $scope.pageNotification.stuckNotifications.addError('User has no rights to perform this action', {
							hasClose: true,
							isAutoHide: true
						});
					}
				}
			},
			onActive: function() {

			},
			onError: function(params) {
				$scope.panelFlag = false;
				var instance = this.instance;
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
				instance.activeNotification = $scope.pageNotification.stuckNotifications.addError($scope.DomainInformationRes.failure_Alert_WhoisGuardRefreshEmail, {
					hasClose: true,
					isAutoHide: true
				});
			},
			onLoading: function(params) {
				var instance = this.instance;
				instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading($scope.DomainInformationRes.static_Loading_WhoisGuardRefreshEmail, true);
			}
		})

		$scope.setWhoisGuardStatus = new pageHelper.AsyncStateBehavior({
			constructor: function() {
				var instance = this.instance;
				instance.onClick = function () {
				    if (!$scope.IsDomainExpired) {
				        $scope.panelFlag = true;
				        instance.asyncStatus(pageHelper.AsyncStatus.Loading);
				        if ($scope.forwardedEmailAddressType == 'ACCOUNTPRIMARYEMAIL')
				            $scope.emailIdChosen = $scope.pageBehavior.overViewModel.PrimaryEmailId;
				        else if ($scope.forwardedEmailAddressType == 'REGISTRANTEMAIL')
				            $scope.emailIdChosen = $scope.RegistrantContact.EmailAddress
				        else if ($scope.forwardedEmailAddressType == 'ADMINISTRATIVEEMAIL')
				            $scope.emailIdChosen = $scope.AdminContact.EmailAddress
				        else if ($scope.forwardedEmailAddressType == 'BILLINGEMAIL')
				            $scope.emailIdChosen = $scope.BillingContact.EmailAddress
				        else if ($scope.forwardedEmailAddressType == 'TECHNICALEMAIL')
				            $scope.emailIdChosen = $scope.TechContact.EmailAddress

				        httpRepository.domainDetails.setWhoisGuardStatustoSwitchOnorOff($scope.DomainName, $scope.slotId, $scope.whoisguardEnabled, $scope.emailIdChosen, $scope.forwardedEmailAddressType).then(function (result) {
				            instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
				        });
				    }
				    else {
				        $scope.model.WGDetails.WGActiveStatus = !$scope.model.WGDetails.WGActiveStatus;
				        instance.activeNotification = $scope.pageNotification.stuckNotifications.addError($scope.DomainInformationRes.failure_Alert_Domain_Expired.replace('{[whoisAction]}', $scope.whoisAction), {
				            hasClose: true,
				            isAutoHide: true
				        });
				    }
				}
			},
			onSuccess: function(params) {
				$scope.panelFlag = false;
				var instance = this.instance;
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
				if (params != undefined && params != null && params != '') {
					if (params.Msg == 'enabled') {
						$scope.whoisguardEnabled = 'true';
						$scope.whoisAction = 'OFF';
						instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInformationRes.success_Alert_WhoisGuardOn, {
							hasClose: true,
							isAutoHide: true
						});
					} else if (params.Msg == 'disabled') {
						$scope.whoisguardEnabled = 'false';
						$scope.whoisAction = 'ON';
						instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInformationRes.success_Alert_WhoisGuardOff, {
							hasClose: true,
							isAutoHide: true
						});
					} else if (params.Msg == 'NORIGHTS') {
						instance.activeNotification = $scope.pageNotification.stuckNotifications.addError('User has no rights to perform this action', {
							hasClose: true,
							isAutoHide: true
						});
					}
				}
			},
			onActive: function() {

			},
			onError: function(params) {
				$scope.panelFlag = false;
				$scope.model.WGDetails.WGActiveStatus = !$scope.model.WGDetails.WGActiveStatus;
				var instance = this.instance;
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
				instance.activeNotification = $scope.pageNotification.stuckNotifications.addError($scope.DomainInformationRes.failure_Alert_WhoisGuardOnOff.replace('{[whoisAction]}', $scope.whoisAction), {
					hasClose: true,
					isAutoHide: true
				});
			},
			onLoading: function(params) {
				var instance = this.instance;
				instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading($scope.DomainInformationRes.static_Loading_WhoisGuardOnOff.replace('{[whoisAction]}', $scope.whoisAction), true);
			}
		})
		$scope.autoRenewBehavior = new pageHelper.AsyncStateBehavior({
		    constructor: function () {
		        var instance = this.instance;

		        instance.changeState = function (event) {
		            var showPrompt = function (title, content) {
		                return $modal.open({
		                    templateUrl: "/Domains/PromptModalOpen",
		                    controller: 'promptRemoveModalCtrl',
		                    size: 'lg',
		                    resolve: {
		                        modalTitle: function () { return title; },
		                        modalContent: function () { return content; }
		                    }
		                });
		            }

		            var domainName = $scope.model.DomainName,
                        isDomainStatus = (!$scope.is3dPartyDomain) ? $scope.model.AutoRenew : true,
                        isWgStatus = ($scope.model.WGDetails.WGActiveStatus != null) ? $scope.model.WGDetails.WGAutoRenew : null,
                        isPremiumDnsStatus = ($scope.model.PremiumDnsDetails.IsPremiumdDNSBuyed) ? $scope.model.PremiumDnsDetails.IsAutoRenewEnabled : null,
                        modalHeader = "",
                        modalContent = "",
                        senderName = event.target.attributes["renew-service-type"].value ,
		                activeModalInstance = null;

		            var service = dspAutoRenewService(senderName, event.target.checked, isDomainStatus, isWgStatus, isPremiumDnsStatus, domainName, $scope.is3dPartyDomain);
		            //Prevent server error
		            event.target.checked = !event.target.checked;


		            instance.changeModelState = function (senderName) {
		                if (senderName == "Domain") {
		                    $scope.model.AutoRenew = !$scope.model.AutoRenew;
		                }
		                else if (senderName == "WhoisGuard") {
		                    $scope.model.WGDetails.WGAutoRenew = !$scope.model.WGDetails.WGAutoRenew
		                }
		                else if (senderName == "PremiumDNS") {
		                    $scope.model.PremiumDnsDetails.IsAutoRenewEnabled = !$scope.model.PremiumDnsDetails.IsAutoRenewEnabled
		                }
		            }
		            instance.changeModelState(senderName);

		            service.callbackAction.domain = function (action) {
		                var deferred = $q.defer();
		                httpRepository.domainList.domainWhoIsAutoRenew("DOMAIN", domainName, action, isWgStatus?isWgStatus:false).then(function (result) {
		                	result.sender = "Domain";
		                	if (!result.Error) {
		                		isDomainStatus = (!$scope.is3dPartyDomain) ? action : true;
			                }

			                deferred.resolve(!result.Error);
		                    instance.asyncStatus((!result.Error) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
		                    
		                });
		                return deferred.promise;
		            }
		            service.callbackAction.whoisGuard = function (action) {
		            
		                httpRepository.domainList.domainWhoIsAutoRenew("WG", domainName, isDomainStatus, action).then(function (result) {
		                    result.sender = "WhoisGuard";
		                    instance.asyncStatus((!result.Error) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
		                });
		            }
		            service.callbackAction.premiumDNS = function (action) {
		                httpRepository.domainList.setPremiumDnsAutoRenew($scope.model.PremiumDnsDetails.Id, action).then(function (result) {
		                    result.sender = "PremiumDNS";
		                    //instance.asyncStatus((!result.Error) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
		                    $scope.premiumDNS.autorenewBehavior.asyncStatus((!result.Error) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
		                });
		            }
		            service.apply();
			    }


				instance.asyncStatus(pageHelper.AsyncStatus.Active);
			},
		    onSuccess: function (params) {
		        var instance = this.instance;
		        if (instance[params.sender] != null)
		            instance[params.sender].destroy(params);
		        instance.changeModelState(params.sender);
		        instance[params.sender] = $scope.pageNotification.stuckNotifications.addSuccess(params.Msg, {
		            hasClose: true,
		            isAutoHide: true
		        });
		        instance.asyncStatus(pageHelper.AsyncStatus.Active);
		    },
			onActive: function (params) { },
			onLoading: function (params) { },
			onError: function (params) {
			    var instance = this.instance;
			    if (instance[params.sender] != null)
			        instance[params.sender].destroy(params);

			    instance[params.sender] = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
			        hasClose: true,
			        isAutoHide: true
			    });
			    instance.asyncStatus(pageHelper.AsyncStatus.Active);
			}
		});

		$scope.resendNotification = new pageHelper.AsyncStateBehavior({
			constructor: function() {
				var instance = this.instance;
				instance.onClick = function() {
					$scope.panelFlag = true;
					instance.asyncStatus(pageHelper.AsyncStatus.Loading);
					httpRepository.domainDetails.resendNotificationEmail($scope.DomainName).then(function(result) {
						instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
					});
				}
			},
			onSuccess: function(params) {
				$scope.panelFlag = false;
				var instance = this.instance;
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
				if (params != undefined && params != null && params != '') {
					instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInformationRes.success_Alert_RegistrantResendNotification, {
						hasClose: true,
						isAutoHide: true
					});
				}
			},
			onActive: function() {

			},
			onError: function(params) {
				$scope.panelFlag = false;
				var instance = this.instance;
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
				instance.activeNotification = $scope.pageNotification.stuckNotifications.addError($scope.DomainInformationRes.failure_Alert_RegistrantResendNotification, {
					hasClose: true,
					isAutoHide: true
				});
			},
			onLoading: function(params) {
				var instance = this.instance;
				instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading($scope.DomainInformationRes.static_Loading_RegistrantResendNotification, true);
			}
		});

		$scope.ChangeWGForwardEmail = new pageHelper.AsyncStateBehavior({
			constructor: function() {
				var instance = this.instance;
				instance.onClick = function (selectedAddressType) {
				    if (!$scope.IsDomainExpired) {
				        instance.asyncStatus(pageHelper.AsyncStatus.Loading)
				        $scope.typeChange(selectedAddressType);
				        httpRepository.domainDetails.changeForwardedEmailAddress($scope.DomainName, $scope.slotId, $scope.forwardedEmailAddressType).then(function (result) {
				            instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
				        });
				    }
				    else {
				        if ($scope.selectedAddressType != selectedAddressType) {
				            $timeout(function () {
				                $('#fwdemailto').val($scope.selectedAddressType).change();
				                instance.activeNotification = $scope.pageNotification.stuckNotifications.addError('Failed to change Forward to email : The domain is expired.', {
				                    hasClose: true,
				                    isAutoHide: true
				                });
				            }, 100);
				        }
				    }
				}
			},
			onSuccess: function(params) {
				var instance = this.instance;
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
				if (params.Result == 'NORIGHTS') {
					instance.activeNotification = $scope.pageNotification.stuckNotifications.addError('User has no rights to perform this action', {
						hasClose: true,
						isAutoHide: true
					});
				} else {
					instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInformationRes.success_Alert_WhoisGuardChangeForwardedEmail, {
						hasClose: true,
						isAutoHide: true
					});
				}
			},
			onActive: function() {

			},
			onError: function() {
			},
			onLoading: function() {
			}
		});

		$scope.typeChange = function(type) {
			for (var i = 0; i < $scope.typeOfEmail.length; i++) {
				if (type == $scope.typeOfEmail[i].label) {
					$scope.forwardedEmailAddressType = $scope.typeOfEmail[i].value;
					$scope.selectedtypetext = $scope.typeOfEmail[i].label;
					break;
				}
			}
		};


		$scope.SaveChangesToSetEmailRefreshDuration = new pageHelper.AsyncStateBehavior({
			constructor: function() {
				var instance = this.instance;

				instance.onClick = function (emailUpdateDuration) {
				    if (!$scope.IsDomainExpired) {
				        instance.asyncStatus(pageHelper.AsyncStatus.Loading)
				        httpRepository.domainDetails.setEmailRefreshDuration($scope.DomainName, $scope.slotId, emailUpdateDuration).then(function (result) {
				            instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
				        });
				    }
				    else {
				        if ($scope.selectedEmailUpdateDuration != emailUpdateDuration) {
				            $timeout(function () {
				                $('#autorefresh').val($scope.selectedEmailUpdateDuration).change();
				                instance.activeNotification = $scope.pageNotification.stuckNotifications.addError('Failed to change Automatically Refresh : The domain is expired.', {
				                    hasClose: true,
				                    isAutoHide: true
				                });
				            },100);
				        }
				    }
				}

			},
			onSuccess: function(params) {
				var instance = this.instance;
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
				if (params.Result == 'NORIGHTS') {
					instance.activeNotification = $scope.pageNotification.stuckNotifications.addError('User has no rights to perform this action', {
						hasClose: true,
						isAutoHide: true
					});

				} else {
					instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInformationRes.success_Alert_WhoisGuardRefreshDuration, {
						hasClose: true,
						isAutoHide: true
					});
				}
			},
			onActive: function() {
			},
			onError: function() {
			},
			onLoading: function() {
			}

		})


		$scope.IsChooseExtendedAttributeModalPopUpOpened = false;
		$scope.openChooseExtendedAttributeModalPopUp = function() {
			if (!$scope.IsChooseExtendedAttributeModalPopUpOpened) {
				var modalInstance = $modal.open({
					templateUrl: "/Domains/ChooseExtendedModal/",
					controller: 'ChooseExtendedAttributeCtrl',
					size: 'lg',
					backdrop: 'static',
					resolve: {
						sectionViewModal: function() {
							return $scope.model;
						}
					}
				});

				modalInstance.result.then(function(model) {
					$scope.IsChooseExtendedAttributeModalPopUpOpened = false;
				});
				modalInstance.opened.then(function() {
					$scope.IsChooseExtendedAttributeModalPopUpOpened = true;
				});
			}

		}

		$scope.setContactDetails = function (contactDetails) {
		    if ($scope.model.ContactDetails != null && $scope.model.ContactDetails.RegistrantContactDetails != null) {
		        $scope.RegistrantContact = $scope.model.ContactDetails.RegistrantContactDetails;
		    }

		    if ($scope.model.ContactDetails != null && $scope.model.ContactDetails.AdminContactDetails != null) {
		        $scope.AdminContact = $scope.model.ContactDetails.AdminContactDetails;
		    }
		    if ($scope.model.ContactDetails != null && $scope.model.ContactDetails.TechContactDetails != null) {
		        $scope.TechContact = $scope.model.ContactDetails.TechContactDetails;
		    }
		    if ($scope.model.ContactDetails != null && $scope.model.ContactDetails.BillingContactDetails != null) {
		        $scope.BillingContact = $scope.model.ContactDetails.BillingContactDetails;
		    }

		    if ($scope.model.ContactDetails != null && $scope.model.ContactDetails.ExtendedAttributesInfo != null) {
		        $scope.ExtendedAttributesInfo = $scope.model.ContactDetails.ExtendedAttributesInfo;

		        if ($scope.ExtendedAttributesInfo.CcLocality != undefined && $scope.ExtendedAttributesInfo != null && $scope.ExtendedAttributesInfo.CcLocality != '') {
		            sslRepository.sslInfo.GetCountryName($scope.ExtendedAttributesInfo.CcLocality.toUpperCase()).then(function(result) {
		                if (!result.Error)
		                    $scope.ExtendedAttributesInfo.CountryName = result;
		            });
		        }
		        if ($scope.ExtendedAttributesInfo.RegistrantJoDateDec != undefined && $scope.ExtendedAttributesInfo.RegistrantJoDatePub != undefined) {
		            $scope.ExtendedAttributesInfo.RegistrantJoDateDec = pageHelper.Date.dateFromJson($scope.ExtendedAttributesInfo.RegistrantJoDateDec);
		            $scope.ExtendedAttributesInfo.RegistrantJoDateDec = $filter('date')(new Date($scope.ExtendedAttributesInfo.RegistrantJoDateDec), 'MMM d, yyyy')

		            $scope.ExtendedAttributesInfo.RegistrantJoDatePub = pageHelper.Date.dateFromJson($scope.ExtendedAttributesInfo.RegistrantJoDatePub);
		            $scope.ExtendedAttributesInfo.RegistrantJoDatePub = $filter('date')(new Date($scope.ExtendedAttributesInfo.RegistrantJoDatePub), 'MMM d, yyyy')
		        }
		        if ($scope.ExtendedAttributesInfo.RegistrantBirthDate != undefined) {
		            $scope.ExtendedAttributesInfo.RegistrantBirthDate = pageHelper.Date.dateFromJson($scope.ExtendedAttributesInfo.RegistrantBirthDate);
		            $scope.ExtendedAttributesInfo.RegistrantBirthDate = $filter('date')(new Date($scope.ExtendedAttributesInfo.RegistrantBirthDate), 'MMM d, yyyy')
		        }
		        if ($scope.ExtendedAttributesInfo.RegistrantBirthplace != undefined && $scope.ExtendedAttributesInfo.RegistrantBirthplace != '') {
		            var commaSplit = ',';
		            var contactDetail = [];
		            if ($scope.ExtendedAttributesInfo.RegistrantBirthplace.indexOf(',') > -1) {
		                contactDetail = $scope.ExtendedAttributesInfo.RegistrantBirthplace.split(commaSplit);
		                $scope.ExtendedAttributesInfo.placeOfBirth = contactDetail[1];
		                $scope.ExtendedAttributesInfo.PostalCode = contactDetail[0];
		            }
		            sslRepository.sslInfo.GetCountryName($scope.ExtendedAttributesInfo.RegistrantBirthplace.toUpperCase()).then(function(result) {
		                if (!result.Error)
		                    $scope.ExtendedAttributesInfo.CountryName = result;
		            });
		        }
		    }
		};

		$scope.pageBehavior = new pageHelper.AsyncStateBehavior({
			constructor: function() {
				var instance = this.instance;
				instance.showLoadPanel = true;
				instance.asyncStatus(pageHelper.AsyncStatus.Loading);
				instance.GetDomainDetailsTabView = function(domainName) {
					httpRepository.domainDetails.getDomainDetailsTabOverView(domainName).then(function(result) {
						instance.loading = false;
						result.sender = "getModel";
						if (result.Result != null) {
							$scope.model = JSON.parse(result.Result);
							var CurrrentDateTime = moment(new Date($.now()));
							var DomainExpDate = moment($scope.model.ExpiryDateTime);
							var WGExpDate = moment($scope.model.WGDetails.WGExpireDateTime);
							var DomainExpiringIndays = moment.duration(DomainExpDate.diff(CurrrentDateTime)).asDays();
							var WGExpiringInDays = moment.duration(WGExpDate.diff(CurrrentDateTime)).asDays();

							if (DomainExpiringIndays < 30 && DomainExpiringIndays > 0)
								$scope.model.ContextualMessage = "Your domain is expiring soon.";

							if (WGExpiringInDays < 30 && WGExpiringInDays > 0)
							    $scope.model.WGContextualMessage = "Your WhoisGuard will expire soon.";


							if ($scope.model.IsNamecheapDomain) {
							    $scope.setContactDetails($scope.model.ContactDetails);
							}
                            
							if (CurrrentDateTime > DomainExpDate)
							    $scope.IsDomainExpired = true;

							$scope.slotId = $scope.model.WGDetails.WGSlotID;

							$scope.model.StartDateTime = $filter('date')(new Date($scope.model.StartDateTime), 'MMM d, yyyy');
							$scope.model.ExpiryDateTime = $filter('date')(new Date($scope.model.ExpiryDateTime), 'MMM d, yyyy')
							$scope.model.Validity = $scope.model.StartDateTime + ' - ' + $scope.model.ExpiryDateTime;
							$scope.model.WGDetails.WGPurchaseDateTime = $filter('date')(new Date($scope.model.WGDetails.WGPurchaseDateTime), 'MMM d, yyyy');
							$scope.model.WGDetails.WGExpireDateTime = $filter('date')(new Date($scope.model.WGDetails.WGExpireDateTime), 'MMM d, yyyy')
							$scope.model.WGDetails.WGValidity = $scope.model.WGDetails.WGPurchaseDateTime + ' - ' + $scope.model.WGDetails.WGExpireDateTime;
							$scope.associatedEmailAddress = $scope.model.WGDetails.WGAssociatedEmail;


							$scope.typeOfEmail = [
								{ value: 'ACCOUNTPRIMARYEMAIL', label: 'Account Primary Email', email: $scope.model.PrimaryEmailId },
								{ value: 'REGISTRANTEMAIL', label: 'Registrant Email', email: ($scope.RegistrantContact == null || $scope.RegistrantContact == undefined) ? "" : $scope.RegistrantContact.EmailAddress },
								{ value: 'ADMINISTRATIVEEMAIL', label: 'Administrative Email', email: ($scope.AdminContact == null || $scope.AdminContact == undefined) ? "" : $scope.AdminContact.EmailAddress },
								{ value: 'BILLINGEMAIL', label: 'Billing Email', email: ($scope.BillingContact == null || $scope.BillingContact == undefined) ? "" : $scope.BillingContact.EmailAddress },
								{ value: 'TECHNICALEMAIL', label: 'Technical Email', email: ($scope.TechContact == null || $scope.TechContact == undefined) ? "" : $scope.TechContact.EmailAddress }
							];
							for (var i = 0; i < $scope.typeOfEmail.length; i++) {
								if ($scope.model.WGDetails.WGForwardedEmailType == $scope.typeOfEmail[i].value) {
									$scope.forwardedEmailAddressType = $scope.typeOfEmail[i].label;
									$scope.emailIdChosen = $scope.typeOfEmail[i].email;
									break;
								}
							}
							if ($scope.model.WGDetails.WGForwardedEmailType == '' || $scope.model.WGDetails.WGForwardedEmailType == null) {
								$scope.forwardedEmailAddressType = $scope.typeOfEmail[0].value;
								$scope.emailIdChosen = $scope.model.PrimaryEmailId;
							}
							$scope.selectedAddressType = $scope.forwardedEmailAddressType;
							$scope.typeChange($scope.selectedAddressType);
							$scope.selectedEmailUpdateDuration = ($scope.model.WGDetails.WGEmailChangeDuration == 0) ? 3 : $scope.model.WGDetails.WGEmailChangeDuration;
							if ($scope.model.WGDetails.WGActiveStatus == 1) {
								$scope.whoisguardEnabled = 'true';
								$scope.whoisAction = 'OFF';
							} else if ($scope.model.WGDetails.WGActiveStatus == 0) {
								$scope.whoisguardEnabled = 'false';
								$scope.whoisAction = 'ON';
							} else {
								$scope.whoisguardEnabled = 'NA';
								$scope.whoisAction = 'NA';
							}
						}
						instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
					});
				}
				$scope.redirectDomainList = {};
				$scope.redirectDomainList.ncGrid = new ncGridParams();

				$scope.emailRedirectList = {};
				$scope.emailRedirectList.ncGrid = new ncGridParams();

			},
			onSuccess: function(params) {
				var instance = this.instance;
				instance.showLoadPanel = false;
				instance.overViewModel = JSON.parse(params.Result);
				redirectDomainListConstructor();
				emailRedirectListConstructor();
				$scope.redirectDomainList.ncGrid.settings.reload();
				$scope.emailRedirectList.ncGrid.settings.reload();
				$scope.getNameserverDetails(instance.overViewModel);
				$scope.validateSellDomainDetails(instance.overViewModel);
				if ($scope.is3dPartyDomain) {
				    $scope.premiumDNS.checkNsRecords();
				}
				$scope.premiumDNS.autorenewBehavior.checkDomainStatus();

				if ($scope.model.IsNsChangeProhibited) {
					$scope.nsProhibit.setProhibit($scope.model.NsChangeProhibitedSeconds);
				}

			},
			onLoading: function(params) {
				var instance = this.instance;
				instance.loading = true;
			},
			onError: function(params) {
				var instance = this.instance;
				instance.isLoading = false;
				instance.activeNotification = $scope.pageNotification.alerts.addError(params.Msg, {
					hasClose: true,
					isAutoHide: false
				});
			}
		});

		function redirectDomainListConstructor() {
			var instance = $scope.redirectDomainList;
			instance.listType = $scope.listType.DomainRedirect;
			instance.showMoreLess = showMoreLessConstructor(instance.ncGrid);
			ncGridConstructor(instance);
			instance.ncGrid.settings.getData = function($defer, ncGridState) {
			    var domainRedirectRecords = $scope.pageBehavior.overViewModel.DomainRedirects?$scope.pageBehavior.overViewModel.DomainRedirects:[];
				var result = [];
				if (domainRedirectRecords != null) {
					for (var i = 0; i < domainRedirectRecords.length; i++) {
						//if (domainRedirectRecords[i].SourceUrl == "*." + $scope.DomainName) {
						if (domainRedirectRecords[i].SourceUrl == "Wildcard Redirect") {
							//domainRedirectRecords[i].SourceUrl = "Wildcard Redirect";
							$scope.IsWildCardExist = true;
						}
						result.push(createRecordBehavior(domainRedirectRecords[i], $scope.redirectDomainList, $scope.listType.DomainRedirect));
					}
					$defer.resolve({ Data: result });
				}
			}
			actionConstructor(instance, instance.listType);
		}

		//Email Redirect list
		function emailRedirectListConstructor() {
			var instance = $scope.emailRedirectList;
			instance.listType = $scope.listType.EmailRedirect;
			instance.showMoreLess = showMoreLessConstructor(instance.ncGrid);
			ncGridConstructor(instance);
			instance.ncGrid.settings.getData = function($defer, ncGridState) {
			    var emailRedirectRecords = $scope.pageBehavior.overViewModel.RedirectEmailDetails?$scope.pageBehavior.overViewModel.RedirectEmailDetails:[];
				var result = [];
				if (emailRedirectRecords != null) {
					for (var i = 0; i < emailRedirectRecords.length; i++) {
						//if (emailRedirectRecords[i].MailBox == "*") {
						if (emailRedirectRecords[i].MailBox == "Catch-All") {
							//emailRedirectRecords[i].MailBox = "Catch-All";
							$scope.IsCatchAllExist = true;
						}
						result.push(createRecordBehavior(emailRedirectRecords[i], $scope.emailRedirectList, $scope.listType.EmailRedirect));
					}
					$defer.resolve({ Data: result });
				}
			}
			actionConstructor(instance, instance.listType);
		}


		//#region Common Constructors
		function ncGridConstructor(instance) {
			var ncGrid = instance.ncGrid;
			ncGrid.parameters.mapping.isLazyLoading = false;
			ncGrid.parameters.storage.addNewFirst = false;

			ncGrid.eventListener.then(function(eventScope) {
				eventScope.$on(ncGridEventNames.ncGridRenderPageAfter, function(event, parameters) {
					if (instance.showMoreLess)
						instance.showMoreLess.checkState();
				});
			});
			ncGrid.settings.selection.canChangeSelection = function(columnData) {
				return columnData.savedModel != null && !columnData.asyncStatus().isDisabled;
			}
		}

		function showMoreLessConstructor(ncGrid) {
			return {
				isMore: null,
				isLess: null,
				onMore: function() {
					this.isMore = false;
					this.isLess = true;
					this.checkState();
				},
				onLess: function() {
					this.isMore = true;
					this.isLess = false;
					this.checkState();
				},
				checkState: function() {
					if (ncGrid.parameters.storage.requestData.length <= 5) {
						this.isMore = false;
						this.isLess = false;
					} else if (this.isMore == null) {
						this.isMore = true;
					}
					for (var i = 0; i < ncGrid.parameters.storage.requestData.length; i++) {
						if (ncGrid.parameters.storage.requestData[i].model.HostId == -1 || i < 5 || this.isLess) {
							ncGrid.parameters.storage.requestData[i].limitedDisplay = false;
						} else {
							ncGrid.parameters.storage.requestData[i].limitedDisplay = true;
						}
					}
				}
			}
		}

		$scope.CheckWildCardExist = function() {
			if ($scope.redirectDomainList.newRecords.length == 0) {
				$scope.IsWildCardExist = false;
			} else {
				for (indexWildCard = 0; indexWildCard < $scope.redirectDomainList.newRecords.length; indexWildCard++) {
					if ($scope.redirectDomainList.newRecords[indexWildCard].sourceUrlType == 'wildcard')
						$scope.IsWildCardExist = true;
					else
						$scope.IsWildCardExist = false;
				}
			}
		}

		$scope.CheckCatchAllExist = function() {
			if ($scope.emailRedirectList.newRecords.length == 0) {
				$scope.IsCatchAllExist = false;
			} else {
				for (indexCatchAll = 0; indexCatchAll < $scope.emailRedirectList.newRecords.length; indexCatchAll++) {
					if ($scope.emailRedirectList.newRecords[indexCatchAll].sourceUrlType == 'catchall')
						$scope.IsCatchAllExist = true;
					else
						$scope.IsCatchAllExist = false;
				}
			}
		}

		function actionConstructor(instance, listType) {

			instance.notSavedRecords = [];
			instance.newRecords = [];

			instance.addRecord = function() {
				var newRecord = new createRecordBehavior(null, instance, listType);
				instance.newRecords.push(newRecord);
				instance.notSavedRecords.push(newRecord);
				instance.showMoreLess.onMore();
				if (instance.ncGrid.parameters.storage.pageData.length > 0) {
					for (var index = 0; index < instance.ncGrid.parameters.storage.pageData.length; index++) {
						if (instance.ncGrid.parameters.storage.pageData[index].recordModel.SourceUrl == "Wildcard Redirect" && instance.ncGrid.parameters.storage.pageData[index].recordModel.SourceUrl != undefined) {
							$scope.IsWildCardExist = true;
						} else if (instance.ncGrid.parameters.storage.pageData[index].recordModel.MailBox == "Catch-All" && instance.ncGrid.parameters.storage.pageData[index].recordModel.MailBox != undefined) {
							$scope.IsCatchAllExist = true;
						}
					}
				}
				//$scope.CheckWildCardExist();
				//$scope.CheckCatchAllExist();
				if (listType == 1)
					setTimeout(function() { $("#tbodyEmailRedirect").removeClass('async-processing'); }, 1); // to remove loader after new records added.
				if (listType == 0)
					setTimeout(function() { $("#tbodyDomainRedirect").removeClass('async-processing'); }, 1); // to remove loader after new records added.


			}
			instance.addWildCardRecord = function() {
				var newRecord = new createRecordBehavior(null, instance, listType, 'wildcard');
				instance.newRecords.push(newRecord);
				instance.notSavedRecords.push(newRecord);
				instance.showMoreLess.onMore();
				$scope.CheckWildCardExist();
				setTimeout(function() { $("#tbodyDomainRedirect").removeClass('async-processing'); }, 1); // to remove loader after new records added.
			}
			instance.addCatchAllRecord = function() {
				var newRecord = new createRecordBehavior(null, instance, listType, 'catchall');
				instance.newRecords.push(newRecord);
				instance.notSavedRecords.push(newRecord);
				instance.showMoreLess.onMore();
				$scope.CheckCatchAllExist();
				setTimeout(function() { $("#tbodyEmailRedirect").removeClass('async-processing'); }, 1); // to remove loader after new records added.
			}
			instance.saveRecords = function(itemList, redirectType, saveType) {

				if (itemList == null || itemList.length == 0)
					return;

				if (saveType != 'singleRecord') {
					if (redirectType == 0) {
						angular.forEach($scope.frmDomainRedirect.$error.required, function(formField) {
							formField.$setDirty();
						});
						angular.forEach($scope.frmDomainRedirect.$error.pattern, function(formField) {
						    formField.$setDirty();

						    var singleRecordValue = formField.$$rawModelValue;

						    if (singleRecordValue.indexOf("http://") == -1 && singleRecordValue.indexOf("https://") == -1) {
						        $scope.pageNotification.stuckNotifications.addError("Invalid URL address! Please include a valid protocol, such as http:// or https:// .", {
						            hasClose: true,
						            isAutoHide: true
						        });
						    }
						});
						
						if ($scope.frmDomainRedirect.$invalid)
							return;
					}
					if (redirectType == 1) {
						angular.forEach($scope.frmEmailRedirect.$error.required, function(formField) {
							formField.$setDirty();
						});
						angular.forEach($scope.frmEmailRedirect.$error.pattern, function(formField) {
							formField.$setDirty();
						});
						if ($scope.frmEmailRedirect.$invalid)
							return;
					}

				}
				if (redirectType == $scope.listType.DomainRedirect) {
					function domainRedirectActionFn(actionItem, queueDefer) {
						httpRepository.domainAdvancedDNS.AddOrUpdateDomainRedirectRecord($scope.DomainName, actionItem.recordModel.HostId, actionItem.recordModel.SourceUrl, actionItem.recordModel.DestinationUrl, actionItem.recordState == $scope.recordState.creating).then(function(result) {
							result.sender = (actionItem.recordState == $scope.recordState.creating) ? "add" : "update";
							actionItem.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
							instance.updateActionAcsses();
							queueDefer.resolve();
						});
					}

					for (var index = 0; index < itemList.length; index++) {
						var currentItem = itemList[index];
						currentItem.asyncStatus(pageHelper.AsyncStatus.Loading);
						$scope.actionQueue.push(domainRedirectActionFn, [itemList[index]]);

					}

				} else if (redirectType == $scope.listType.EmailRedirect) {
					function emailRedirectActionFn(actionItem, queueDefer) {
						if (actionItem.recordState == $scope.recordState.creating) {
							httpRepository.emailRedirect.addForwarder($scope.DomainName, actionItem.recordModel.MailBox, actionItem.recordModel.ForwardTo).then(function(result) {
								result.sender = (actionItem.recordState == $scope.recordState.creating) ? "add" : "update";
								actionItem.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
								if (actionItem.recordModel.MailBox == "Catch-All" && !result.Error) {
									$scope.redirectEmailPageNotification.stuckNotifications.addSuccess("Forwarding email has been added. It may take up to 60 minutes for this change to take effect.", {
										hasClose: true,
										isAutoHide: true
									});
								}
								instance.updateActionAcsses();
								queueDefer.resolve();
							});
						} else if (actionItem.recordState == $scope.recordState.editing) {
							httpRepository.emailRedirect.editForwarder($scope.DomainName, actionItem.editModel.MailBoxId, actionItem.editModel.MailBox, actionItem.editModel.ForwardTo, actionItem.savedModel.MailBox, actionItem.savedModel.ForwardTo).then(function(result) {
								result.sender = (actionItem.recordState == $scope.recordState.creating) ? "add" : "update";
								actionItem.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
								if (actionItem.recordModel.MailBox == "Catch-All" && !result.Error) {
									$scope.redirectEmailPageNotification.stuckNotifications.addSuccess("Forwarding email has been added. It may take up to 60 minutes for this change to take effect.", {
										hasClose: true,
										isAutoHide: true
									});
								}
								instance.updateActionAcsses();
								queueDefer.resolve();
							});
						}
					}

					for (var index = 0; index < itemList.length; index++) {
						var currentItem = itemList[index];
						currentItem.asyncStatus(pageHelper.AsyncStatus.Loading);
						$scope.actionQueue.push(emailRedirectActionFn, [itemList[index]]);
					}

					//var currentItem = itemList[0];
					//currentItem.asyncStatus(pageHelper.AsyncStatus.Loading);
					////emailRedirectActionFn(currentItem);
					//$scope.actionQueue.push(emailRedirectActionFn, [itemList[0]]);
				}
			}

			instance.removeRecords = function(itemList, redirectType) {
				$scope.isPromtRemoveRecord = true;
				if (itemList == null || itemList.length == 0) {
					instance.activeNotification = $scope.pageNotification.stuckNotifications.addWarning(bulcIsEmpty, {
						hasClose: true,
						isAutoHide: true
					});
					return;
				}

				function actionFn(actionItem) {
					if (redirectType == $scope.listType.DomainRedirect) {

						httpRepository.domainAdvancedDNS.removeDomainDnsRecord(actionItem.recordModel.HostId, "URL", $scope.DomainName).then(function(result) {
							result.sender = result.sender = "remove";
							actionItem.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
							instance.updateActionAcsses();
							if (result.Error == false) {
								$scope.IsWildCardExist = false;
								//$scope.CheckWildCardExist();
								if (instance.ncGrid.parameters.storage.pageData.length > 0) {
									for (var index = 0; index < instance.ncGrid.parameters.storage.pageData.length; index++) {
										if (instance.ncGrid.parameters.storage.pageData[index].recordModel.SourceUrl == "Wildcard Redirect" && instance.ncGrid.parameters.storage.pageData[index].recordModel.SourceUrl != undefined) {
											$scope.IsWildCardExist = true;
										}
										//else {
										//    $scope.IsWildCardExist = false;
										//}
									}
								}
							}
						});

					} else if (redirectType == $scope.listType.EmailRedirect) {

						var EmailForwarders = {};
						var Forwarders = [];
						var mailBoxNamesList = [];
						var forwardToList = [];

						if (actionItem.recordModel.MailBox == "Catch-All") {
							actionItem.recordModel.MailBox = "*";
						}

						Forwarders.push({
							MailboxId: actionItem.recordModel.MailBoxId,
							MailboxName: actionItem.recordModel.MailBox.replace(/ /g, ''),
							ForwardTo: actionItem.recordModel.ForwardTo.replace(/ /g, '')
						});

						if (actionItem.recordModel.MailBox.indexOf('*') > -1) {
							forwardToList = actionItem.recordModel.ForwardTo.split(',');
							for (i = 0; i < forwardToList.length; i++) {
								mailBoxNamesList[i] = '*';
							}
						} else {
							mailBoxNamesList[0] = actionItem.recordModel.MailBox.replace(/ /g, '');
							forwardToList[0] = actionItem.recordModel.ForwardTo.replace(/ /g, '');
						}

						EmailForwarders = {
							DomainName: $scope.DomainName,
							Forwarders: Forwarders
						};

						httpRepository.emailRedirect.removeForwarder(EmailForwarders).then(function(result) {
							result.sender = result.sender = "remove";
							actionItem.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
							instance.updateActionAcsses();
							if (result.Error == false) {
								$scope.IsCatchAllExist = false;
								//$scope.CheckCatchAllExist();
								if (instance.ncGrid.parameters.storage.pageData.length > 0) {
									for (var index = 0; index < instance.ncGrid.parameters.storage.pageData.length; index++) {
										if (instance.ncGrid.parameters.storage.pageData[index].recordModel.MailBox == "Catch-All") {
											$scope.IsCatchAllExist = true;
										}
										//else {
										//    $scope.IsCatchAllExist = false;
										//}
									}
								}
							}
						});

					}
				}

				itemList[0].asyncStatus(pageHelper.AsyncStatus.Loading)
				actionFn(itemList[0]);
			}
			instance.actionAcsses = {
				canRemove: true,
				canSaveAll: true,
				canSaveOne: true,
				canAddNew: true,
				canCancel: true
			}
			instance.updateActionAcsses = function() {};
		}

		function createRecordBehavior(recordModel, recordsListBehavior, listType, sourceUrlType) {
			return new pageHelper.AsyncStateBehavior({
				constructor: function() {
					var instance = this.instance;
					instance.recordsListBehavior = recordsListBehavior;
					instance.listType = listType;
					instance.model = {};
					instance.editModel = {};
					instance.recordModel = angular.copy(recordModel);
					instance.sourceUrlType = "";
					if (instance.recordModel != null) {
						instance.model = angular.copy(instance.recordModel);
						instance.savedModel = angular.copy(instance.model);
						instance.recordState = $scope.recordState.active;
					} else {

						if (listType == $scope.listType.DomainRedirect) {
							instance.recordModel = {};
							instance.recordModel.HostId = -1;
							var urlDetails = {};
							urlDetails.HostId = -1;
							urlDetails.SourceUrl = "";
							urlDetails.DestinationUrl = "";
							$scope.pageBehavior.overViewModel.DomainRedirects.push(urlDetails);
						} else if (listType == $scope.listType.EmailRedirect) {
							instance.recordModel = {};
							instance.recordModel.MailBoxId = -1;
							var mailboxDetails = {};
							mailboxDetails.MailBoxId = -1;
							mailboxDetails.MailBox = "";
							mailboxDetails.ForwardTo = "";
							if (!$scope.pageBehavior.overViewModel.RedirectEmailDetails) {
							    $scope.pageBehavior.overViewModel.RedirectEmailDetails = [];
							}
						    $scope.pageBehavior.overViewModel.RedirectEmailDetails.push(mailboxDetails);
						}

						if (sourceUrlType == 'wildcard') {
							instance.recordModel = {};
							instance.recordModel.HostId = -1;
							instance.recordModel.DestinationUrl = "";
							instance.recordModel.SourceUrl = "Wildcard Redirect";
							instance.sourceUrlType = "wildcard";
						} else if (sourceUrlType == 'catchall') {
							instance.recordModel = {};
							instance.recordModel.MailBoxId = -1;
							instance.recordModel.ForwardTo = "";
							instance.recordModel.MailBox = "Catch-All";
							instance.sourceUrlType = "catchall";
						}


						instance.recordState = $scope.recordState.creating;
					}


					instance.editRecord = function(checkLockedTooltip, e) {
						if (checkLockedTooltip && instance.recordState != $scope.recordState.active) {
							return;
						}
						if (e) {
							angular.element(e.target).closest(".is-active").removeClass("is-active");
						}
						instance.asyncStatus(pageHelper.AsyncStatus.Active);
						instance.editModel = instance.recordModel;
						instance.editModel.recordModel = instance.recordModel;
						instance.recordState = $scope.recordState.editing;
						recordsListBehavior.notSavedRecords.push(instance);
					}

					instance.removeFromNotSavedRecords = function() {
						var index = recordsListBehavior.notSavedRecords.indexOf(instance);
						recordsListBehavior.notSavedRecords.splice(index, 1);
					}
					instance.removeFromNewRecords = function() {
						var index = recordsListBehavior.newRecords.indexOf(instance);
						recordsListBehavior.newRecords.splice(index, 1);
					}

					instance.cancelRecord = function() {
						instance.removeFromNotSavedRecords();
						if (instance.recordState == $scope.recordState.creating) {
							angular.element(".cancel.ng-scope").mouseleave();
							instance.removeFromNewRecords();
						} else {
							instance.recordModel = angular.copy(instance.savedModel);
							instance.model = angular.copy(instance.recordModel);
							//instance.savedModel = angular.copy(instance.model);
							instance.recordState = $scope.recordState.active;
						}
						//$scope.CheckWildCardExist();
						//$scope.CheckCatchAllExist();
						if (instance.recordState == $scope.recordState.creating) {
							if (instance.recordModel.SourceUrl == "Wildcard Redirect") {
								$scope.IsWildCardExist = false;
							} else if (instance.recordModel.MailBox == "Catch-All") {
								$scope.IsCatchAllExist = false;
							}
						} else if (instance.recordState == $scope.recordState.editing) {
							if (instance.editModel.SourceUrl == "Wildcard Redirect") {
								$scope.IsWildCardExist = true;
							} else if (instance.editModel.MailBox == "Catch-All") {
								$scope.IsCatchAllExist = true;
							}
						}
					}
					instance.saveRecord = function(redirectType, index) {

						var isDomainRedirectValid = true;
						if (redirectType == 0) {
							var srcUrlFieldName = "srcUrl" + index;
							var desUrlFieldName = "desUrl" + index;
							angular.forEach($scope.frmDomainRedirect.$error.required, function(formField) {

								if ((formField.$name == srcUrlFieldName || formField.$name == desUrlFieldName) && formField.$invalid) {
									formField.$setDirty();
									isDomainRedirectValid = false;
								}

							});
							angular.forEach($scope.frmDomainRedirect.$error.pattern, function(formField) {

								if ((formField.$name == srcUrlFieldName || formField.$name == desUrlFieldName) && formField.$invalid) {
									formField.$setDirty();
									isDomainRedirectValid = false;
								}
								var value = formField.$$rawModelValue;

								if (value.indexOf("http://") == -1 && value.indexOf("https://") == -1) {
									$scope.pageNotification.stuckNotifications.addError("Invalid URL address! Please include a valid protocol, such as http:// or https:// .", {
										hasClose: true,
										isAutoHide: true
									});
								}
							});

						}
						var isEmailRedirectValid = true;
						if (redirectType == 1) {
							var aliasFieldName = "alias" + index;
							var fwdedToFieldName = "fwdto" + index;
							angular.forEach($scope.frmEmailRedirect.$error.required, function(formField) {

								if ((formField.$name == aliasFieldName || formField.$name == fwdedToFieldName) && formField.$invalid) {
									formField.$setDirty();
									isEmailRedirectValid = false;
								}

							});
							angular.forEach($scope.frmEmailRedirect.$error.pattern, function(formField) {

								if ((formField.$name == aliasFieldName || formField.$name == fwdedToFieldName) && formField.$invalid) {
									formField.$setDirty();
									isEmailRedirectValid = false;
								}

							});

						}

						if (isDomainRedirectValid && isEmailRedirectValid)
							recordsListBehavior.saveRecords([instance], redirectType, 'singleRecord');


					}
					instance.removeRecord = function(e, redirectType) {
						if (e) {
							angular.element(e.target).closest(".is-active").removeClass("is-active");
						}
						recordsListBehavior.removeRecords([instance], redirectType);

					}
				},
				onSuccess: function(params) {
					var instance = this.instance;
					if (params.sender == "add" || params.sender == "update") {
						instance.removeFromNotSavedRecords();
						if (instance.recordState == $scope.recordState.creating) {
							instance.removeFromNewRecords();
						}
						if (params.Result) {
							if (params.Result.length > 0) {
								instance.recordModel = angular.copy(params.Result[0]);
							}
							if (instance.recordState == $scope.recordState.creating) {
								if (instance.recordModel.SourceUrl == "Wildcard Redirect") {
									$scope.IsWildCardExist = true;
								} else if (instance.recordModel.MailBox == "Catch-All") {
									$scope.IsCatchAllExist = true;
								}
							}
							instance.model = angular.copy(instance.recordModel);
							instance.savedModel = angular.copy(instance.model);
							instance.recordState = $scope.recordState.active;
							if (params.sender == "add") {
								recordsListBehavior.ncGrid.settings.actions.addNewItem(instance);
							}
						}
						setTimeout(function() {
							instance.asyncStatus(pageHelper.AsyncStatus.Active);
							if (!$scope.$$phase) {
								$scope.$apply();
							}

						}, notificationService.notificationTimeLine.success);
					} else if (params.sender == "doNotNeedUpdate") {
						instance.recordState = $scope.recordState.active;
						setTimeout(function() {
							instance.asyncStatus(pageHelper.AsyncStatus.Active);
							if (!$scope.$$phase) {
								$scope.$apply();
							}
						}, notificationService.notificationTimeLine.success);

					} else if (params.sender == "remove") {
						instance.removeFromNotSavedRecords();
						recordsListBehavior.ncGrid.settings.actions.removeItem(instance);
					}
				},
				onActive: function(params) {
					var instance = this.instance;
				},
				onLoading: function(params) {
					var instance = this.instance;
				},
				onLocked: function(params) {
					var instance = this.instance;
				},
				onError: function(params) {
					var instance = this.instance;
					//instance.isLoading = false;
					//if (instance.savedModel != null &&  instance.recordState != $scope.recordState.active) {
					//    instance.recordType = advansedDnsModelService.getRestrictedRecordType(recordModel);
					//    instance.model = advansedDnsModelService[instance.recordType.type].viewModel(angular.copy(recordModel));
					//    instance.savedModel = angular.copy(instance.model);
					//}
					instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
						hasClose: true,
						isAutoHide: false
					});
				}
			});
		}

//DomainNameServers Details Section Start

		$scope.getNameserverDetails = function(model) {
			// $scope.domainCustomNameServers = model.NameServerDetails.NameserversList;
			$scope.domainnameserverViewModel = model;
			$scope.showActionButton = false;
			$scope.SaveNameServer = false;

			var nameServer = [];
			if (model.NameServerDetails.NameserversList != null && !model.NameServerDetails.IsNamecheapSharedHosting) {
				var commaSeperatedNS = model.NameServerDetails.NameserversList.join(',')
				var toSplit = commaSeperatedNS.split(",");
				for (var i = 0; i < toSplit.length; i++) {
					nameServer.push({ "NS": toSplit[i] });
				}
				$scope.domainnameserverViewModel.NameServerDetails.NameserversList = nameServer;

			} else
				$scope.domainnameserverViewModel.NameServerDetails.NameserversList = [{ "NS": '' }, { "NS": '' }];


			if (model.NameServerDetails.IsNamecheapSharedHosting) {
				defaultNS = { NSid: "2", NSname: "SharedHosting" };
				$scope.selectedNameserver = { id: "2", name: "SharedHosting" };

			} else if (model.NameServerDetails.DnsServerType == 'NameCheapDefault' || model.NameServerDetails.DnsServerType == 'None') {
				defaultNS = { NSid: "0", NSname: "NCDefault" };
				$scope.selectedNameserver = { id: "0", name: "NCDefault" };
			} else if (model.NameServerDetails.DnsServerType == 'Custom') {
				defaultNS = { NSid: "3", NSname: "custom" };
				$scope.selectedNameserver = { id: "3", name: "custom" };

			} else if (model.NameServerDetails.DnsServerType == 'Enom') {
				defaultNS = { NSid: "1", NSname: "Enom" };
				$scope.selectedNameserver = { id: "1", name: "Namecheap BackupDNS" };

			} else if (model.NameServerDetails.DnsServerType == 'Premium') {
				defaultNS = { NSid: "4", NSname: "NamecheapPremiumDNS" };
				$scope.selectedNameserver = { id: "4", name: "NamecheapPremiumDNS" };
			}


		}
		$scope.nameServerChange = function(showOnlyActionButton) {
			$scope.showActionButton = true;
			if (showOnlyActionButton != true) {
				if ($scope.pageBehavior.overViewModel.NameServerDetails.DnsServerType != 'Custom')
					$scope.domainnameserverViewModel.NameServerDetails.NameserversList = [{ "NS": '' }, { "NS": '' }];
				$scope.SaveNameServer = false;
			}

		}
		$scope.addMoreNameServers = function() {
			var DomainNS = [{ 'NS': '' }];
			$scope.domainnameserverViewModel.NameServerDetails.NameserversList.push(DomainNS);

		}
		$scope.SaveDomainNameservers = function (tempSelectedNameserverId) {

			$scope.SaveNameServer = true;
			var domainName = $scope.DomainName;
			var nameServerDetails = {
				NameServers: '',
				DnsServerType: ''
			}

			var selectionNameserver = (tempSelectedNameserverId == null) ? $scope.selectedNameserver.id : tempSelectedNameserverId;
			//Do validate if custom NameServer
			if (selectionNameserver == '3') {
				var requiredNameServerCount = 0;
				$("#EdidNameServerfrm input[type='text']").each(function() {

					if (this.value != '') {
						requiredNameServerCount = parseInt(requiredNameServerCount) + 1;
					};

				});
			}
			//Remove required msg when enter two nameservers other then ns1 and ns2 textboxes
			$scope.nsrequired = requiredNameServerCount > 1 ? false : true;

			//Check if custom nameserver atleast two nameservers are required or else no need to validate
			if (requiredNameServerCount > 1 || selectionNameserver != '3') {
				var dnsType = selectionNameserver;

				var premiumDnsConfirmation = false;
				if (dnsType == '0')
					nameServerDetails.DnsServerType = 'NameCheapDefault';
				if (dnsType == '1')
					nameServerDetails.DnsServerType = 'Enom';
				if (dnsType == '2')
					nameServerDetails.DnsServerType = 'SharedHosting';
				if (dnsType == '3')
				{
					nameServerDetails.DnsServerType = 'Custom';
					$("#EdidNameServerfrm input[type='text']").each(function() {

						if (this.value != '') {
							nameServerDetails.NameServers += this.value + ',';
						};
					});
				}

				if (dnsType == '4')
				{
				    nameServerDetails.DnsServerType = 'Premium';
					if (defaultNS.NSid == "3" || defaultNS.NSid == "2") {
						premiumDnsConfirmation = true;

						var confirmChangeNameServerModalInstance = $modal.open
						({
							templateUrl: "/Domains/ConfirmChangeNameServerToPremiumDNSModal",
							controller: 'confirmChangeNameServerToPremiumDnsModalCtrl',
							size: 'lg',
							backdrop: 'static',
							resolve: {}
						});

						confirmChangeNameServerModalInstance.result.then(function (param) {
							$scope.premiumDNS.protectionBehavior.changeState(true);
							process();
						}, function ()
						{
						 $scope.premiumDNS.protectionBehavior.asyncStatus(pageHelper.AsyncStatus.Active);
						 $scope.selectedNameserver = { id: defaultNS.NSid, name: defaultNS.NSname };
						 $scope.showActionButton = false;
						 $scope.model.PremiumDnsDetails.IsPremiumdDNSEnabled = false;
						});

					} else {
						$scope.premiumDNS.protectionBehavior.changeState(true);
					}
				}

				var process = function() {
					$scope.SetDomainNameServers = new pageHelper.AsyncStateBehavior({
						constructor: function() {
							var instance = this.instance;
							$scope.nameServerLoaderPanel = true;
							instance.activeNotification = new notificationService.instance();

							httpRepository.domainDns.setNameServers(nameServerDetails.NameServers, nameServerDetails.DnsServerType, domainName).then(function(result) {
								if (result.Error) {
								    instance.asyncStatus(pageHelper.AsyncStatus.Error, result);
								} else {
									instance.asyncStatus(pageHelper.AsyncStatus.Success, result);
								}
								$rootScope.$broadcast('checkPremiumDnsState', result);
							});
						},

						onSuccess: function(params) {
							if (premiumDnsConfirmation) {
								window.location.href = "/Domains/DomainControlPanel/" + domainName + "/advancedns";
								return;
							}

							if(params.Result != null)
								$scope.nsProhibit.setProhibit(params.Result.NsChangeProhibitedSeconds);

							var instance = this.instance;
							// instance.asyncStatus(pageHelper.AsyncStatus.Active);
							$scope.nameServerLoaderPanel = false;
							//    $scope.pageNotification.alerts.clear();
							$scope.showActionButton = false;
							defaultNS = { NSid: dnsType, NSname: nameServerDetails.DnsServerType };

							//This is for remove empty array after saveing custom nameserver to set in textbox
							var changesNameServer = $scope.domainnameserverViewModel.NameServerDetails.NameserversList;
							if (nameServerDetails.NameServers != '' && nameServerDetails.NameServers != undefined)
								var namerserver_array = $.map(changesNameServer, function(el) {
									if (el.NS != undefined)
										return { "NS": el.NS !== undefined ? el.NS : null };
								});
							$scope.domainnameserverViewModel.NameServerDetails.NameserversList = namerserver_array;

							//end

							if (nameServerDetails.DnsServerType == 'SharedHosting' || nameServerDetails.DnsServerType == 'DNS_com') {
								$scope.pageBehavior.overViewModel.NameServerDetails.IsNamecheapSharedHosting = true;
								$scope.pageBehavior.overViewModel.NameServerDetails.DnsServerType = "DNS_com"
							} else {
								$scope.pageBehavior.overViewModel.NameServerDetails.DnsServerType = nameServerDetails.DnsServerType;
								$scope.pageBehavior.overViewModel.NameServerDetails.IsNamecheapSharedHosting = false;
							}

							if (nameServerDetails.DnsServerType == 'Premium') {
								$scope.model.PremiumDnsDetails.IsPremiumdDNSEnabled = true;
							} else {
								$scope.model.PremiumDnsDetails.IsPremiumdDNSEnabled = false;
							}

							if ($scope.pageBehavior.overViewModel.DomainRedirects == null && $scope.pageBehavior.overViewModel.RedirectEmailDetails == null) {
								if ($scope.pageBehavior.overViewModel.NameServerDetails.DnsServerType == "NameCheapDefault" || $scope.pageBehavior.overViewModel.NameServerDetails.DnsServerType == "Enom") {
									location.reload();
								}
							}

							//instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInformationRes.success_Dynamic_updateNameServers, {
							//	hasClose: true,
							//	isAutoHide: true
							//});

							$scope.redirectDomainList.ncGrid.settings.reload();
							$scope.emailRedirectList.ncGrid.settings.reload();
							setTimeout(function() {
								$("#tbodyEmailRedirect").removeClass('async-processing');
								$("#tbodyDomainRedirect").removeClass('async-processing');
							}, 1); // to remove loader after new records added.
							
							
						},
						onError: function (params) {
							$scope.nameServerLoaderPanel = false;
							//    $scope.pageNotification.alerts.clear();
							$scope.showActionButton = false;
							//  instance.asyncStatus(pageHelper.AsyncStatus.Active);;
							$scope.selectedNameserver = { id: defaultNS.NSid, name: defaultNS.NSname };


							var instance = this.instance;
							params.Msg = $scope.ErrorMessageRes.error_Site_PleaseTryAgain;
							instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
								hasClose: true,
								isAutoHide: true
							});
						}
					});

				}

				if (!premiumDnsConfirmation) {
					process();
				}


			}
		}
		$scope.CancelDomainNameServers = function() {
			//  var defaultNS = $scope.defaultselectedNameserver;
			$scope.selectedNameserver = { id: defaultNS.NSid, name: defaultNS.NSname };
			if ($scope.pageBehavior.overViewModel.NameServerDetails.DnsServerType != 'Custom')
				$scope.domainnameserverViewModel.NameServerDetails.NameserversList = [{ "NS": '' }, { "NS": '' }];
			// $scope.domainCustomNameServers = $scope.pageBehavior.overViewModel.NameServerDetails.NameserversList;
			$scope.showActionButton = false;
		}
		//DomainNameServers Details Section end

		//Sell Domain Details section
		$scope.getDaysBetweentwoDates = function(d1, d2) {
			var ndays;
			var tv1 = d1.valueOf(); // msec since 1970
			var tv2 = d2.valueOf();

			ndays = (tv2 - tv1) / 1000 / 86400;
			ndays = Math.round(ndays - 0.5);
			return ndays;
		}
		$scope.validateSellDomainDetails = function(viewModel) {

			$scope.ListingID = 0;
			$scope.ParkinghostIDsList = viewModel.HostIdList == null ? "" : viewModel.HostIdList.replace(/,\s*$/, "");
			$scope.hostIDsListToBeRemove = viewModel.RemoveHostIdList == null ? "" : viewModel.RemoveHostIdList.replace(/,\s*$/, "");
			if (viewModel.SellDomainDetails != null) {
				$scope.sellDomainDetails = viewModel.SellDomainDetails;
				viewModel.ListingExpirationDate = pageHelper.Date.dateFromJson(viewModel.SellDomainDetails.ListingExpirationDate);
				$scope.ListingID = viewModel.SellDomainDetails.ListingID;
				var currentDate = new Date();
				var ListingExpiryDate = new Date(viewModel.ListingExpirationDate);
				var isDomainExpiry = ListingExpiryDate > currentDate ? true : false;
				$scope.selldomainDescription = ListingExpiryDate;
				var daysBetweenDates = $scope.getDaysBetweentwoDates(ListingExpiryDate, currentDate)
				$scope.isGracePeriod = (daysBetweenDates < 0 && daysBetweenDates >= -7);


			}
		}
		$scope.SellDomainInfo = {};
		$scope.cancelSellDomain = function(domainName, mpListingId) {
			//  if (!$scope.IsChooseMarketPlaceListingModalPopUpOpened) {
			var modalInstance = $modal.open({
				templateUrl: "/Domains/MarketPlaceListingModal/",
				controller: 'marketplaceCancelCtrl',
				size: 'lg',
				backdrop: 'static',
				resolve: {
					sectionViewModal: function() {
						$scope.SellDomainInfo.DomainName = domainName;
						$scope.SellDomainInfo.ListingId = mpListingId;
						return $scope.SellDomainInfo;
					}
				}
			});

			modalInstance.result.then(function(msg) {
				$scope.IsChooseMarketPlaceListingModalPopUpOpened = false;
			});
			modalInstance.opened.then(function() {
				$scope.IsChooseMarketPlaceListingModalPopUpOpened = true;
			});
			//   }

		}
		$scope.getParkingPageModal = function(action) {
			var domainName = $scope.DomainName;
			//$scope.hostIDsListToBeRemoved = '';
			// if action is turn on then open the model window else process internally.            
			if (action == 'OFF') {
				$scope.pageNotification.stuckNotifications.clear();
				$scope.pageNotification.stuckNotifications.addLoading($scope.DomainsInfo.static_TurningOffParkingPageLoading, false);

				httpRepository.domainDns.turningOnOrOffHostRecords($scope.ParkinghostIDsList, false, domainName).then(function(result) {
					if (result.Error) {
						$scope.pageNotification.stuckNotifications.clear();
						$scope.pageNotification.stuckNotifications.addError($scope.DomainsInfo.error_TurnedOffParkingPage, { hasClose: true, isAutoHide: true })
					} else {
						$scope.pageNotification.stuckNotifications.clear();
						$scope.pageNotification.stuckNotifications.addSuccess($scope.DomainsInfo.success_TurnedOffParkingPage, { hasClose: true, isAutoHide: true })
						$scope.ParkingPageStatus = "OFF";
						$scope.showParkingPageTurnOnButton = true;
						setTimeout(function() { location.reload(); }, 1000); // Reload with delay
					}
				});
			} else if (action == 'ON') {
				// if ($scope.showParkingPageInfoAboutDnsUpdate || $scope.showParkingPageInfoAboutServiceUpdate) {
				var modalInstance = $modal.open
				({
					templateUrl: "/Domains/ParkingPageModalPopup",
					controller: 'domainParkingPageActionCtrl',
					size: 'lg',
					backdrop: 'static',
					resolve: {
						domainName: function() {
							return domainName;
						},
						showParkingPageInfoAboutDnsUpdate: function() {
							return $scope.showParkingPageInfoAboutDnsUpdate;
						},
						showParkingPageInfoAboutServiceUpdate: function() {
							return $scope.showParkingPageInfoAboutServiceUpdate;
						},
						ParkingPagehostIDsList: function() {
							return $scope.ParkinghostIDsList;
						},
						TempParkingPagehostIDsList: function() {
							//return $scope.TempParkingPagehostIDsList;
							return $scope.ParkinghostIDsList;
						},
						hostIDsListToBeRemoved: function() {
							return $scope.hostIDsListToBeRemove;
						}
					}
				});
				modalInstance.result.then(function(param) {
					if (param != null && param != '') {
						var instance = this.instance;
						$scope.pageNotification.stuckNotifications.clear();

						if (param.Call == 'Success') {
							$scope.pageNotification.stuckNotifications.addSuccess($scope.DomainsInfo.success_Site_ParkingPageTurnOn, { hasClose: true, isAutoHide: true });
							$scope.ParkingPageStatus = "ON";
							$scope.showParkingPageTurnOnButton = false;
							setTimeout(function() { location.reload(); }, 1000); // Reload with delay
						} else if (param.Call == 'Error') {
							$scope.pageNotification.stuckNotifications.addError($scope.DomainsInfo.error_Site_ParkingPageTurnOn, { hasClose: true, isAutoHide: true });
						}
					}
				});
				// }
			}
		}


		$scope.transferInPageBehavior = new pageHelper.AsyncStateBehavior({
			constructor: function() {
				var instance = this.instance;

				instance.activeNotification = new notificationService.instance();
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
				instance.Load = function(model) {
					if (model.DomainTransfer != null && model.DomainTransfer != undefined) {
						instance.authorizeTransfer = function() {
							instance.asyncStatus(pageHelper.AsyncStatus.Loading);
							domainTransferInService.showAuthorizeTransferModal($scope.DomainName, model.DomainTransfer.TransferId).then(function(modalResult) {
								instance.asyncStatus(pageHelper.AsyncStatus.Success, { sender: "authorizeTransfer", Result: modalResult });
							}, function() {
							});
						};

						instance.refreshStatus = function() {
							instance.asyncStatus(pageHelper.AsyncStatus.Loading);
							httpRepository.domainTransfer.refreshTransferStatus(model.DomainTransfer.TransferId, $scope.DomainName).then(function(result) {
								result.sender = "refreshStatus";
								instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
							});
						}
						instance.resendEmail = function() {
							instance.asyncStatus(pageHelper.AsyncStatus.Loading);
							httpRepository.domainTransfer.resendEmail(model.DomainTransfer.TransferId).then(function(result) {
								result.sender = "resendEmail";
								instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
							});
						}
						var startNotification = notificationService.getUrlNotificationKey();
						if (startNotification == 's_dts') {
							$scope.pageNotification.stuckNotifications.addSuccess(DomainTransferRes.message_RefreshStatus_Success, { hasClose: true, isAutoHide: true });
						}
					}
				}
			},

			onSuccess: function(params) {
				var instance = this.instance;
				if ($scope.dcpmodeldata.DomainTransfer != null && $scope.dcpmodeldata.DomainTransfer != undefined) {

					if (params.sender == "refreshStatus") {
						if (params.Result.TransferStatus != $scope.dcpmodeldata.DomainTransfer.TransferStatus) {
							window.location.href = window.location.href + "?notificationKey=s_dts";
						} else {
							instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(DomainTransferRes.message_RefreshStatus_Success, {
								hasClose: true,
								isAutoHide: true
							});
						}
					} else if (params.sender == "authorizeTransfer") {
						$scope.dcpmodeldata.DomainTransfer = params.Result;
						instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(DomainTransferRes.message_AutorizeTransfer_Success, {
							hasClose: true,
							isAutoHide: true
						});
					} else if (params.sender == "resendEmail") {
						instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(DomainTransferRes.message_ResendEmail_Success, {
							hasClose: true,
							isAutoHide: true
						});
					}
				}
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
			},
			onActive: function(params) {
				var instance = this.instance;
			},
			onLoading: function(params) {
				var instance = this.instance;
				instance.showLoadPanel = true;
			},
			onError: function(params) {
				var instance = this.instance;
				if (params.sender == "resendEmail") {
					params.Msg = DomainTransferRes.message_ResendEmail_Error;
				} else if (params.sender == "refreshStatus") {
					params.Msg = DomainTransferRes.message_RefreshStatus_Error;
				}
				instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
					hasClose: true,
					isAutoHide: true
				});
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
			}
		});

		$scope.transferStatusType = {
			None: 0,
			Pending: 1,
			Cancelled: 2,
			QueuedForTransfer: 3,
			AwaitingEppCode: 4,
			AwaitingEmailConfirmation: 5,
			Done: 6,
			VerifyingDomainContacts: 7
		};

		//end Sell Domain Details end

		//#region PremiumDNS

		$scope.premiumDNS = function() {
			var protection = new pageHelper.AsyncStateBehavior(
				{
				constructor: function() {
					var instance = this.instance;

					instance.setProhibited= function(value) {
						instance.IsProhibited = value;
					}

					instance.changeState = function(onlyPredefine) {
						instance.asyncStatus(pageHelper.AsyncStatus.Loading);
					    if (!onlyPredefine)
					        $scope.SaveDomainNameservers(!$scope.model.PremiumDnsDetails.IsPremiumdDNSEnabled ? 4 : 0);
					    else {
					        $scope.selectedNameserver = (!$scope.model.PremiumDnsDetails.IsPremiumdDNSEnabled) ? { id: "4", name: "NamecheapPremiumDNS" } : { id: "0", name: "NCDefault" };
					    }
					}

					$rootScope.$on("checkPremiumDnsState", function(event, result) {
					  $scope.selectedNameserver = $scope.model.PremiumDnsDetails.IsPremiumdDNSEnabled ? { id: "4", name: "NamecheapPremiumDNS" } : { id: defaultNS.NSid, name: defaultNS.NSname };
						instance.asyncStatus(result.Error ?  pageHelper.AsyncStatus.Error : pageHelper.AsyncStatus.Success);
					});


					instance.asyncStatus(pageHelper.AsyncStatus.Active);
				},
				onSuccess: function(params) {
					var instance = this.instance;

					params.Msg = $scope.model.PremiumDnsDetails.IsPremiumdDNSEnabled ? $scope.DomainInformationRes.success_Alert_PremiumDnsOn : $scope.DomainInformationRes.success_Alert_PremiumDnsOff; instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(params.Msg, {
						hasClose: true,
						isAutoHide: true
					});
					instance.asyncStatus(pageHelper.AsyncStatus.Active);
				},
				onActive: function(params) {},
				onLoading: function(params) {},
				onError: function (params) {
				    if ($scope.selectedNameserver.id == "4" || defaultNS.NSid=="4") {
				        $scope.model.PremiumDnsDetails.IsPremiumdDNSEnabled = !$scope.model.PremiumDnsDetails.IsPremiumdDNSEnabled;
				        $scope.selectedNameserver = { id: defaultNS.NSid, name: defaultNS.NSname };
				    }
				}
			});

			var autorenew = new pageHelper.AsyncStateBehavior({
				constructor: function() {
					var instance = this.instance;
					instance.changeState = function() {
						instance.asyncStatus(pageHelper.AsyncStatus.Loading);
						$scope.model.PremiumDnsDetails.IsAutoRenewEnabled = !$scope.model.PremiumDnsDetails.IsAutoRenewEnabled;
						httpRepository.domainList.setPremiumDnsAutoRenew($scope.model.PremiumDnsDetails.Id, $scope.model.PremiumDnsDetails.IsAutoRenewEnabled).then(function(result) {
							instance.asyncStatus((!result.Error) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
						});
					}
					instance.checkDomainStatus = function () {
					    if ($scope.model.IsDomainLocked && $scope.model.PremiumDnsDetails.IsAutoRenewEnabled) {
					        httpRepository.domainList.setPremiumDnsAutoRenew($scope.model.PremiumDnsDetails.Id, false).then(function () {
					            $scope.model.PremiumDnsDetails.IsAutoRenewEnabled = false
					        })
					    }
					}
				},
				onSuccess: function(params) {
					var instance = this.instance;

					$scope.model.PremiumDnsDetails.IsAutoRenewEnabled = !$scope.model.PremiumDnsDetails.IsAutoRenewEnabled;

					params.Msg = $scope.model.PremiumDnsDetails.IsAutoRenewEnabled ? $scope.DomainInformationRes.success_Alert_PremiumDnsAutoRenewEnable : $scope.DomainInformationRes.success_Alert_PremiumDnsAutoRenewDisable;

					instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(params.Msg, {
						hasClose: true,
						isAutoHide: true
					});

					instance.asyncStatus(pageHelper.AsyncStatus.Active);
				},
				onActive: function(params) {
					var instance = this.instance;
				},
				onLoading: function(params) {
					var instance = this.instance;
					instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading($scope.DomainInformationRes.static_Loading_PremiumDnsRenewEnableDisable, {
						hasClose: true,
						isAutoHide: true
					});
				},
				onError: function(params) {
					var instance = this.instance;
					instance.activeNotification = $scope.pageNotification.stuckNotifications.addError($scope.ErrorMessageRes.error_Site_PleaseTryAgain, {
						hasClose: true,
						isAutoHide: true
					});
					instance.asyncStatus(pageHelper.AsyncStatus.Active);
				}
			});

            var checkNsRecords= function() {
                if ($scope.is3dPartyDomain && $scope.model.PremiumDnsDetails.IsPremiumdDNSBuyed && $scope.model.PremiumDnsDetails.IsActive && $scope.domainnameserverViewModel.NameServerDetails.DnsServerType != 'Premium') {
                    angular.element('[data-ng-controller="domainControlPanelCtrl as dcpCtrl"]').scope().pageNotification.alerts.addWarning(function () {
                        var nsRecords = "<ul>";
                        $scope.model.PremiumDnsDetails.ExpectedPremiumNsList.forEach(function (element) { nsRecords += "<li>" + element + "</li>"; });
                        nsRecords += "</ul> ";
                        return $filter('stringFormat')($scope.DomainDnsValidation.warning_PremiumDnsNSRecordsNotValid, [nsRecords], false);
                    }(), {
                        hasClose: true,
                        isAutoHide: false
                    });
                }

                if ($scope.is3dPartyDomain && $scope.model.IsHostedDomainFailoverDns) {
                    angular.element('[data-ng-controller="domainControlPanelCtrl as dcpCtrl"]').scope().pageNotification.alerts.addWarning("There are some issues with the addition of your domain to the PremiumDNS platform, please contact CS team for assistance.", {
                        hasClose: true,
                        isAutoHide: false
                    });
                }
                
            }

		    return {
				protectionBehavior: protection,
				autorenewBehavior: autorenew,
				hidden: !$scope.is3dPartyDomain && !$scope.pageBehavior.IsDomainOwner && !$scope.pageBehavior.IsManagerHasPremiumDnsRights,
				getBlockTooltip: function () {
				    if ($scope.model)
				    {
				        if ($scope.model.PremiumDnsDetails.IsPremiumdDNSBuyed) {
				            return $scope.DomainInformationRes.tooltip_PremiumDNSTooltipBuyed;
				        }
				        return $scope.DomainInformationRes.tooltip_PremiumDNSTooltipNotBuyed;
				    }
				    return $scope.DomainInformationRes.tooltip_PremiumDNSTooltipNotBuyed;
				    
				},
				checkNsRecords: checkNsRecords
			}
		}();

	//#endRegion

	//#region NsChangeProhibited
	$scope.nsProhibit = {
		isProhibited: false,
		messageObj: null,
		currentTotalSeconds:  0,
		timer: null,
		isDestroyed:false,
		setProhibit: function (totalSeconds) {
			$scope.nsProhibit.isDestroyed = false;
			$scope.nsProhibit.messageObj = null;
			$scope.nsProhibit.isProhibited = true;
			$scope.nsProhibit.currentTotalSeconds = totalSeconds;

			this.timer = setInterval(function () {
				if ($scope.nsProhibit.messageObj == null && !$scope.nsProhibit.isDestroyed) {
					$scope.nsProhibit.messageObj = $scope.pageNotification.stuckNotifications.addWarning("", {
						hasClose: true,
						isAutoHide: false,
						onDestroyed: function() {
							$scope.nsProhibit.messageObj = null;
							$scope.nsProhibit.isDestroyed = true;
						}
					});
				}

				if ($scope.nsProhibit.messageObj != null) {
					var stuckMsgElement = angular.element("#"+$scope.nsProhibit.messageObj.notificationId);
					$scope.nsProhibit.messageObj.msg = "Please allow our system " + $scope.nsProhibit.currentTotalSeconds + " seconds before switching your nameservers again";
					stuckMsgElement.text($scope.nsProhibit.messageObj.msg);
				}

				if ($scope.nsProhibit.currentTotalSeconds <= 0) {
					$scope.nsProhibit.isProhibited = false;
					$scope.nsProhibit.messageObj.destroy();
					clearInterval($scope.nsProhibit.timer);
					$scope.$apply();
				}

				$scope.nsProhibit.currentTotalSeconds--;
			}, 1000);

		}
	}

	//#endRegion
	}
]);;
app.controller('domainListActionCtrl', ['$scope', '$rootScope', '$modalInstance', 'httpRepository', '$filter', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'serviceName', 'distinctDomainServiceType', 'domainServiceTypes', 'DomainAutoRenew', 'WGAutoRenew', 'PDNSAutoRenew', 'actionType', 'domainsCount', 'additionalInfo', 'dataCategoryInitValues', 'commaSeperatedDomainNames', 'domainSelectionType', '$modal',
function ($scope, $rootScope, $modalInstance, httpRepository, $filter, notificationService, pageHelper, $q, ncGridParams, $sce, serviceName, distinctDomainServiceType, domainServiceTypes, DomainAutoRenew, WGAutoRenew, PDNSAutoRenew, actionType, domainsCount, additionalInfo, dataCategoryInitValues, commaSeperatedDomainNames, domainSelectionType, $modal) {
    //#region Local properties   
    $scope.CategoryCurrentAction = '';
    $scope.pageHelper = pageHelper;//for call helpers methods from view
    $scope.pageNotification = new notificationService.instance();
    $scope.DomainParams = {};
    $scope.paramModel = {};
    $scope.domainListnotificationAlertArguments = {
        hasClose: true,
        isAutoHide: true
    };

    //#endregion
    $scope.sslnotificationAlertArguments = { isAutoHide: true, hasClose: true }
    $scope.select2Options = { minimumResultsForSearch: -1 };
    if (actionType != 'reglock') {
        $scope.serviceName = serviceName;
    }
    else {
        $scope.regLockServiceName = JSON.parse(serviceName);
    }
    
    $scope.distinctDomainServiceType = distinctDomainServiceType;
    $scope.domainServiceTypes = domainServiceTypes;
    $scope.bulkActionType = actionType;
    $scope.dataCategoryInitValues = dataCategoryInitValues;
    $scope.commaSeperatedDomainNames = commaSeperatedDomainNames;
    $scope.IsOwner = {};

    $scope.domainSelectionType = domainSelectionType;
    $scope.paramValue = "Turn On";
    $scope.serviceType = "All Services";
    $scope.DomainsCount = domainsCount;
    $scope.DomainInfoRes = DomainInfoRes;
    $scope.verifyContactsIntro = (domainsCount > 1) ? ($scope.DomainInfoRes.static_VerifyContactsIntroductionMultiple.replace('{0}', domainsCount)) : $scope.DomainInfoRes.static_VerifyContactsIntroductionSingle;
    $scope.AutoRenewIntro = (domainsCount > 1) ? $scope.DomainInfoRes.static_AutoRenewIntroductionMultiple : $scope.DomainInfoRes.static_AutoRenewIntroductionSingle;

    $scope.TransferOutIntro = function (dparamValue, isEppChecked) {
        if (dparamValue == "Lock" || (dparamValue == "UnLock" && !isEppChecked)) {
            if ($scope.regLockServiceName.DomainLockCount == 0 || $scope.regLockServiceName.DomainLockCount==1)
                $scope.DomainLockIntro = $scope.DomainInfoRes.static_DomainLockIntroductionSingle.replace('{0}', $scope.regLockServiceName.DomainLockCount);
            else
                $scope.DomainLockIntro = $scope.DomainInfoRes.static_DomainLockIntroduction.replace('{0}', $scope.regLockServiceName.DomainLockCount);
            $scope.isEppChecked = false;
        }
        else {
            if ($scope.regLockServiceName.EppCount == 0 || $scope.regLockServiceName.EppCount == 1)
                $scope.DomainLockIntro = $scope.DomainInfoRes.static_DomainLockIntroductionSingle.replace('{0}', $scope.regLockServiceName.EppCount);
            else
                $scope.DomainLockIntro = $scope.DomainInfoRes.static_DomainLockIntroduction.replace('{0}', $scope.regLockServiceName.EppCount);
        }
    }

    $scope.DomainLockIntro = (domainsCount > 1) ? ($scope.DomainInfoRes.static_DomainLockIntroduction.replace('{0}', domainsCount)) : ($scope.DomainInfoRes.static_DomainLockIntroductionSingle.replace('{0}', 1));
    //$scope.DomainLockIntro = $scope.DomainInfoRes.static_DomainLockIntroduction.replace('{0}', domainsCount);

    if (actionType == 'reglock') {
        var checkCount = 0;
        for (var count = 0; count < $scope.regLockServiceName.IsOwner.length; count++) {
            if ($scope.regLockServiceName.IsOwner[count] == true) {
                $scope.IsDomainOwner = true;
                checkCount++;
            }
        }
        if (checkCount == 0) {
            $scope.IsDomainOwner = false;
        }
    }

    $scope.cancelClick = function () {
        $modalInstance.close();
    };

    $scope.CancelBulkAction = $rootScope.closeLightbox = function () {
        httpRepository.domainList.goToDomainList();
    }

    //Auto Renew
    $scope.isChecked = "false";
    $scope.isContactChecked = "false";
    $scope.description = "";

    $scope.AutoRenewBulkModification = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            var finalServiceNames = [];  //Get Domain Names which has a productType equal to the selected service type.
            var finalServiceTypes = [];
            var id = [];
            instance.click = function (paramValue, serviceType, isChecked) {
                $('.opac').delay(25).queue(function () {
                    $(this).addClass('page-load').css({ 'text-align': 'left', 'padding': '0em', 'opacity': '0.5', 'background-position' : 'center 4.5em' });                  
                });
                var serviceCount = 1;
                var finalCount = 0;
                var finalId;

                var domainAssociatesService = [];
                var domainAssociatesServiceId = [];
                var serviceId;

                var showPrompt = function (title, content) {
                    return $modal.open({
                        templateUrl: "/Domains/PromptModalOpen",
                        controller: 'promptRemoveModalCtrl',
                        size: 'lg',
                        resolve: {
                            modalTitle: function () { return title; },
                            modalContent: function () { return content; }
                        }
                    });
                }

                if (serviceType == "All Services")
                {
                    finalServiceNames = serviceName;
                    finalServiceTypes = domainServiceTypes.join(',');
                    id = additionalInfo;
                }
                else
                {
                    var IsShowPrompt = false;
                    var IsAutoRenew = false;
                    var IsWGAutoRenew = false;
                    var IsPDNSAutoRenew = false;
                    var Domains = [];
                    var domainTurnOffDomains = [];
                    var onlyDomainService = false;
                    var showWGPMMessage = false;
                    var showPDNSPMMessage = false;

                    for (domainCount = 0; domainCount < domainServiceTypes.length; domainCount++) {

                        if (domainServiceTypes[domainCount] == serviceType) {
                            finalServiceNames[finalCount] = serviceName[domainCount];
                            if (serviceType == "PrivateEmail" || serviceType == "Hosting" || serviceType == "PremiumDNS") {
                                id[finalCount] = additionalInfo[domainCount];
                            }
                            finalCount++;
                        }


                        IsAutoRenew = DomainAutoRenew[domainCount];
                        IsWGAutoRenew = WGAutoRenew[domainCount];
                        IsPDNSAutoRenew = PDNSAutoRenew[domainCount];

                        if (IsAutoRenew != undefined && !IsAutoRenew) {
                            IsShowPrompt = true;
                        }

                        if (IsAutoRenew != undefined && IsAutoRenew && paramValue == "Turn Off" && serviceType == "Domains") {
                            Domains.push(serviceName[domainCount]);
                            domainAssociatesService.push("Domains");
                            domainAssociatesServiceId.push("");
                        }
                        else if (IsWGAutoRenew != undefined && IsWGAutoRenew && paramValue == "Turn Off" && serviceType == "Domains")
                        {
                            Domains.push(serviceName[domainCount]);
                            domainAssociatesService.push("WhoisGuard");
                            domainAssociatesServiceId.push("");
                            showWGPMMessage = true;
                        }
                        else if (IsPDNSAutoRenew != undefined && IsPDNSAutoRenew && paramValue == "Turn Off" && serviceType == "Domains") {
                            Domains.push(serviceName[domainCount]);
                            domainAssociatesService.push("PremiumDNS");
                            domainAssociatesServiceId.push(additionalInfo[domainCount]);
                            showPDNSPMMessage = true;
                        }

                        if (domainServiceTypes[domainCount] == serviceType) {
                            if (serviceType == "PremiumDNS" || serviceType == "WhoisGuard") {
                                Domains.push(serviceName[domainCount]);
                                domainAssociatesService.push("Domains");
                                domainAssociatesServiceId.push("");

                                Domains.push(serviceName[domainCount]);
                                domainAssociatesService.push(serviceType);
                                domainTurnOffDomains.push(serviceName[domainCount]);
                                if (serviceType == "PrivateEmail" || serviceType == "Hosting" || serviceType == "PremiumDNS") {
                                    domainAssociatesServiceId.push(additionalInfo[domainCount]);
                                }
                                else if (serviceType == "WhoisGuard") {
                                    domainAssociatesServiceId.push("");
                                }
                            }
                            else if (!IsAutoRenew && serviceType == "Domains" && paramValue == "Turn On") {
                                onlyDomainService = true;
                                Domains.push(serviceName[domainCount]);
                                domainAssociatesService.push("Domains");
                                domainAssociatesServiceId.push("");
                            }
                            else if (IsAutoRenew && serviceType == "Domains" && paramValue == "Turn On") {
                                domainAssociatesServiceId.push("");
                            }
                        }
                        else if (paramValue == "Turn On" && ((!IsAutoRenew && serviceType == "Domains") || onlyDomainService)) {
                            if (IsWGAutoRenew != undefined && !IsWGAutoRenew) {
                                Domains.push(serviceName[domainCount]);
                                domainAssociatesService.push("WhoisGuard");
                                domainAssociatesServiceId.push("");
                                showWGPMMessage = true;
                            }
                            else if (IsPDNSAutoRenew != undefined && !IsPDNSAutoRenew) {
                                Domains.push(serviceName[domainCount]);
                                domainAssociatesService.push("PremiumDNS");
                                domainAssociatesServiceId.push(additionalInfo[domainCount]);
                                showPDNSPMMessage = true;
                            }
                        }

                    }
                    finalServiceTypes = serviceType;
                }
                if (id.length>0) {
                    finalId = id.join(',');
                } else {
                    finalId = null;
                }

                if (domainAssociatesServiceId.length > 0) {
                    serviceId = domainAssociatesServiceId.join(',');
                }
                else {
                    serviceId = null;
                }

                if (serviceType == "WhoisGuard" || serviceType == "PremiumDNS" || serviceType == "Domains") {

                    var statusOnOffMsg = "";
                    var promptMsg = "";
                    if (paramValue == "Turn On") {
                        statusOnOffMsg = "Turn On " + serviceType + " Auto-Renewal";

                        if (showWGPMMessage && showPDNSPMMessage)
                            promptMsg = $scope.DomainInfoRes.prompt_Content_AutoRenew_PM1;
                        else if (showWGPMMessage)
                            promptMsg = $scope.DomainInfoRes.prompt_Content_AutoRenew_PM2;
                        else if (showPDNSPMMessage)
                            promptMsg = $scope.DomainInfoRes.prompt_Content_AutoRenew_PM3;
                    }
                    else if (paramValue == "Turn Off") {
                        statusOnOffMsg = "Turn Off " + serviceType + " Auto-Renewal";

                        if (showWGPMMessage && showPDNSPMMessage)
                        {
                            IsShowPrompt = true;
                            promptMsg = $scope.DomainInfoRes.prompt_Content_AutoRenew_PM4;
                        }                            
                        else if (showWGPMMessage)
                        {
                            IsShowPrompt = true;
                            promptMsg = $scope.DomainInfoRes.prompt_Content_AutoRenew_PM5;
                        }                            
                        else if (showPDNSPMMessage)
                        {
                            IsShowPrompt = true;
                            promptMsg = $scope.DomainInfoRes.prompt_Content_AutoRenew_PM6;
                        }                            
                    }


                    if (IsShowPrompt != undefined && IsShowPrompt) {
                        $modalInstance.close($scope.DomainParams);
                        if (serviceType == "Domains" && promptMsg != undefined && promptMsg !="") {
                            var activeModalInstance = showPrompt(statusOnOffMsg, promptMsg);
                            activeModalInstance.result.then(function () {
                                httpRepository.domainListAction.autoRenewList(Domains.join(','), 'autorenewoptions', paramValue, domainAssociatesService.join(','), $scope.bulkActionType, isChecked, serviceId).then(function (result) { //id.join(',')
                                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                                    $scope.DomainParams = {
                                        params: result,
                                        renewOption: paramValue
                                    };

                                    $modalInstance.close($scope.DomainParams);
                                });
                            }, function () {
                                if (paramValue == "Turn On")
                                {
                                    httpRepository.domainListAction.autoRenewList(finalServiceNames.join(','), 'autorenewoptions', paramValue, finalServiceTypes, $scope.bulkActionType, isChecked, finalId).then(function (result) { //id.join(',')
                                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                                        $scope.DomainParams = {
                                            params: result,
                                            renewOption: paramValue
                                        };

                                        $modalInstance.close($scope.DomainParams);
                                    });
                                }
                            });
                        }
                        else if (serviceType == "WhoisGuard") {
                            var wgTurnOnOROffDomainNames = [];
                            wgTurnOnOROffDomainNames = $scope.distinctDomainServiceTypes(domainTurnOffDomains);
                            var activeModalInstance = showPrompt(statusOnOffMsg, $scope.DomainInfoRes.prompt_Content_AutoRenew_PM7 + "<br /><br />" + wgTurnOnOROffDomainNames.join('<br />'));
                            activeModalInstance.result.then(function () {
                                httpRepository.domainListAction.autoRenewList(Domains.join(','), 'autorenewoptions', paramValue, domainAssociatesService.join(','), $scope.bulkActionType, isChecked, serviceId).then(function (result) { //id.join(',')
                                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                                    $scope.DomainParams = {
                                        params: result,
                                        renewOption: paramValue
                                    };

                                    $modalInstance.close($scope.DomainParams);
                                });
                            }, function () { });
                        }
                        else if (serviceType == "PremiumDNS") {
                            var pdnsTurnOnOROffDomainNames = [];
                            pdnsTurnOnOROffDomainNames = $scope.distinctDomainServiceTypes(domainTurnOffDomains);
                            var activeModalInstance = showPrompt(statusOnOffMsg, $scope.DomainInfoRes.prompt_Content_AutoRenew_PM8 + "<br /><br />" + pdnsTurnOnOROffDomainNames.join('<br />'));
                            activeModalInstance.result.then(function () {
                                httpRepository.domainListAction.autoRenewList(Domains.join(','), 'autorenewoptions', paramValue, domainAssociatesService.join(','), $scope.bulkActionType, isChecked, serviceId).then(function (result) { //id.join(',')
                                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                                    $scope.DomainParams = {
                                        params: result,
                                        renewOption: paramValue
                                    };

                                    $modalInstance.close($scope.DomainParams);
                                });
                            }, function () {

                            });
                        }
                    }
                    else if (IsShowPrompt != undefined && !IsShowPrompt && serviceType == "Domains" && paramValue == "Turn Off") {
                        httpRepository.domainListAction.autoRenewList(finalServiceNames.join(','), 'autorenewoptions', paramValue, finalServiceTypes, $scope.bulkActionType, isChecked, finalId).then(function (result) { //id.join(',')
                            instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                            $scope.DomainParams = {
                                params: result,
                                renewOption: paramValue
                            };

                            $modalInstance.close($scope.DomainParams);
                        });
                    }
                    else {
                        httpRepository.domainListAction.autoRenewList(finalServiceNames.join(','), 'autorenewoptions', paramValue, finalServiceTypes, $scope.bulkActionType, isChecked, finalId).then(function (result) { //id.join(',')
                            instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                            $scope.DomainParams = {
                                params: result,
                                renewOption: paramValue
                            };

                            $modalInstance.close($scope.DomainParams);
                        });
                    }
                }
                else {
                    httpRepository.domainListAction.autoRenewList(finalServiceNames.join(','), 'autorenewoptions', paramValue, finalServiceTypes, $scope.bulkActionType, isChecked, finalId).then(function (result) { //id.join(',')
                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                        $scope.DomainParams = {
                            params: result,
                            renewOption: paramValue
                        };

                        $modalInstance.close($scope.DomainParams);
                    });
                }
            }
        },

        onSuccess: function (params) {
            var instance = this.instance;
                instance.showContent = true;
                instance.model = params.Result;
                $scope.pageNotification.alerts.clear();
        },

        onActive: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },

        onLoading: function (params) {
            var instance = this.instance;
            $scope.pageNotification.stuckNotifications.addLoading(instance.messages.loading, { hasClose: false, isAutoHide: false });
        },

        onError: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.msg, {
                hasClose: true,
                isAutoHide: true
            });
      },

        onLocked: function (params) {
            var instance = this.instance;
        }
    });

    $scope.dparamValue = "UnLock";
    $scope.reasonValue = "";
    var uniqueServiceNames = [];
    $scope.distinctDomainServiceNames = function () {
        $.each(serviceName, function (i, service) {
            if ($.inArray(service, uniqueServiceNames) === -1) uniqueServiceNames.push(service);
        });
        return uniqueServiceNames;
    }

    //Add Category
    $scope.categoryName = '';
    $scope.domainNames = '';

    $scope.CreateCategory = function (itemID, itemText, parameters, rowIndex) {
        $scope.CategoryCurrentAction = 'CREATE';        
        $scope.AsyncCategoryActions.CreateCategory(itemText)        
    }

    $scope.AllotCategory = function (itemID, itemText, parameters) {
        $scope.CategoryCurrentAction = 'ALLOT';
        $scope.domainNames = parameters[0].commaSeperatedDomainNames;//$scope.domainNames = $scope.commaSeperatedDomainNames;        
        $scope.categoryName = itemText;
    }

    $scope.RemoveCategory = function (itemID, itemText, parameters) {
        $scope.categoryName = '';
    }

    $scope.allotCategoryBulkModification = function (commaSeperatedDomainNames) {

        $scope.domainNames = commaSeperatedDomainNames;

        if (!$scope.categoryName.trim() || !$scope.domainNames.trim())
        {
            $scope.pageNotification.stuckNotifications.clear();
            //$scope.pageNotification.stuckNotifications.addError($scope.DomainInfoRes.error_Contextual_DomainAddCategoryAlert, { hasClose: true, isAutoHide: true });
            
        }
        else
        {
            $scope.CategoryCurrentAction = 'ALLOT';
            $scope.AsyncCategoryActions.AllotCategory(commaSeperatedDomainNames, $scope.categoryName)
        }        
    }

    $scope.AsyncCategoryActions = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.AllotCategory = function (domainName, categoryName) {
                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                httpRepository.domainList.allotCategories(domainName, categoryName).then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                });
            }
            instance.CreateCategory = function (categoryName) {
                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                httpRepository.domainList.createCategories(null, categoryName).then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                    if (result.Error == false){$scope.categoryName= categoryName;}
                });
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            if ($scope.CategoryCurrentAction == 'ALLOT') {
                $scope.DomainParams = { Call: "Success", CategoryName: $scope.categoryName, Message: params.Msg, SelectedDomains: $scope.commaSeperatedDomainNames, dataCategoryInitValues: $scope.dataCategoryInitValues };
                $modalInstance.close($scope.DomainParams);
                //if (result.Error == false)
                //    httpRepository.domainList.goToDomainList();
            }
            if (params.Result[0] == "CREATED") {
                $scope.LasteCreatedCategoryId = params.Result[2];
                //TO ADD THE NEWLY ADDED CATEGORY IN CATEGORIES FILTER ITEMS
                //TO ADD THE NEWLY ADDED CATEGORY IN CATEGORIES DROP DOWNS
                $scope.Categories = {};
                $scope.Categories.id = params.Result[2];
                $scope.Categories.text = params.Result[1];
                $scope.dataCategoryInitValues.push($scope.Categories);
                initAddCategories("bulkAddCategories", eval($scope.dataCategoryInitValues));
                $("#bulkAddCategories").select2("val", $scope.Categories.id);
            }
        },
        onActive: function (params) {
            var instance = this.instance;
        },
        onLoading: function (params) {
            var instance = this.instance;
            if ($scope.CategoryCurrentAction == 'ALLOT')
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Allotting Category', false);
            else if ($scope.CategoryCurrentAction == 'CREATE')
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Creating Category', false);
        },
        onError: function (params) {
            var instance = this.instance;
            if ($scope.CategoryCurrentAction == 'ALLOT') {
                $scope.DomainParams = { Call: "Error", CategoryName: $scope.categoryName, Message: params.Msg };
                $modalInstance.close($scope.DomainParams);
            }
            else if ($scope.CategoryCurrentAction == 'CREATE') {
                $scope.pageNotification.stuckNotifications.addError(params.Msg, { hasClose: true, isAutoHide: true });
            }
        },
        onLocked: function (params) {
            var instance = this.instance;
        }
    });


  //Domain Lock or Transfer Out
    $scope.IsEmailChecked = false;
    $scope.isEppChecked = false;
    $scope.domainLockRecvEppCode = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.click = function (dparamValue, isEppChecked, reasonValue, description, isContactChecked, IsEmailChecked) {

                $('.opac').delay(25).queue(function () {
                    $(this).addClass('page-load').css({ 'text-align': 'left', 'padding': '0em', 'opacity': '0.5', 'background-position': 'center 3.2em' });
                });

              if (dparamValue == 'Lock') {
               
                    var domainNames = $scope.regLockServiceName.TransferDomains;
                    $scope.bulkActionType = actionType;
                }
                else if (dparamValue == 'UnLock' && !isEppChecked) {
                    var domainNames = $scope.regLockServiceName.TransferDomains;
                    $scope.bulkActionType = actionType;
                }
               else {
                    var domainNames = $scope.regLockServiceName.TransferDomains;
                    $scope.bulkActionType = 'geteppcode';
                }

              var paramKey = ['FutureContact','Reason','Description']
              var paramValue = [isContactChecked,reasonValue, description]
               
                httpRepository.domainListAction.ReceiveEppCode(domainNames.join(','), dparamValue, paramKey, paramValue, "Domains", $scope.bulkActionType, IsEmailChecked, $scope.regLockServiceName.IsSupportRegLock.join(','), $scope.regLockServiceName.IsEppRequired.join(','), $scope.regLockServiceName.IsOwner.join(',')).then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                    $scope.DomainParams = {
                        params: result,
                        lockOption: dparamValue,
                        checked: IsEmailChecked
                    };
                    $modalInstance.close($scope.DomainParams);
                });
            }

        },

        onSuccess: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);

        },

        onActive: function (params) {
            var instance = this.instance;

        },

        onLoading: function (params) {
            var instance = this.instance;
        },

        onError: function (params) {
            var instance = this.instance;
            $scope.pageNotification.alerts.addError(params.Msg, $scope.sslnotificationAlertArguments)
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });

            instance.showContent = true;
            instance.model = params.Result;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },

        onLocked: function (params) {
            var instance = this.instance;
        }
    });


    //Verify Contacts
    $scope.ViewContactsBulkModification = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.click = function () {
                $('.opac').delay(25).queue(function () {
                    $(this).addClass('page-load').css({ 'text-align': 'left', 'padding': '0em', 'opacity': '0.5', 'background-position': 'center 2.5em' });
                });
                var domainNames = $scope.distinctDomainServiceNames();

                httpRepository.domainListAction.verifyContacts(domainNames.join(','), 'ResendVerification', '1', 'Domains', $scope.bulkActionType, 'false').then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                });
            }
       
        },

        onSuccess: function (params) {
            var instance = this.instance;
            $modalInstance.close(params.Msg);
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            $scope.pageNotification.stuckNotifications.addLoading("Loading", false)
       },

        onActive: function (params) {
            var instance = this.instance;

        },

        onLoading: function (params) {
            var instance = this.instance;
        },

        onError: function (params) {
            var instance = this.instance;
            $scope.pageNotification.alerts.addError(params.Msg, $scope.sslnotificationAlertArguments)
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });

            instance.showContent = true;
            instance.model = params.Result;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },

        onLocked: function (params) {
            var instance = this.instance;
        }
    });

    $scope.distinctDomainServiceTypes = function (ServiceTypes) {
        var uniqueServiceTypes = [];
        $.each(ServiceTypes, function (i, service) {
            if ($.inArray(service, uniqueServiceTypes) === -1) uniqueServiceTypes.push(service)

        });
        return uniqueServiceTypes;
    }

}]);
;
app.controller('domainOnlyCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'ncGridEventNames', '$interval', '$timeout',
function ($scope, $rootScope, httpRepository, $filter, $modal, notificationService, pageHelper, $q, ncGridParams, $sce, ncGridEventNames, $interval, $timeout) {
    $scope.pageNotification = new notificationService.instance();
    $scope.expirationDateStyle = {
        date: 0,
        dateGrace: 1,
        dateDanger: 2,
        dateAlert: 3
    }
    $scope.DomainInfoRes = DomainInfoRes;
    $scope.SyncDomainList = {};
    $scope.NoSearchOption = { minimumResultsForSearch: -1 };
    $scope.init = function (cmsWebAddToCartURL) {
        $scope.CmsWebAddToCartURL = cmsWebAddToCartURL;
        $scope.CheckSyncDomainList();
    }
    $scope.domainSelectionType = "DOMAINONLY";
    $scope.domainListnotificationAlertArguments = { isAutoHide: true, hasClose: true }

    $scope.pageBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.showLoadPanel = true;
            instance.showContent = false;
            instance.model = null;
            instance.pageNgGridSettings = new ncGridParams();
            instance.pageNgGridSettings.parameters.search.serchPropertyNames = ['model.DomainName', 'model.StatusInfo.1', 'model.ExpirationDateTitleValue'];
            instance.pageNgGridSettings.parameters.mapping.renderChunkSize = 100;
            instance.pageNgGridSettings.parameters.mapping.serverChunkSize = DomainList_ChunkSize;
            instance.pageNgGridSettings.settings.getData = function ($defer, ncGridState) {
                httpRepository.domainList.getDomainsOnly(ncGridState).then(function (result) {
                    var dataLength = 0;
                    $scope.model = result.Result;
                    if ($scope.model != null && $scope.model.Data != null) {
                        if (result.Msg != '' && result.Msg != null && result.Msg != undefined) {
                            instance.activeNotification = $scope.pageNotification.alerts.addSuccess(result.Msg, {
                                hasClose: true,
                                isAutoHide: true
                            });
                        }
                        dataLength = $scope.model.Data.length;
                        //result.Result.Data = $scope.AssignCssClassForFields(result.Result.Data);

                        for (var i = 0; i < dataLength; i++) {
                            $scope.model.Data[i] = createGridItemBehavior($scope.model.Data[i], instance);
                        }
                        $defer.resolve($scope.model);
                        instance.pageNgGridSettings.settings.actions.updateDropDownBtns();
                        instance.model = instance.pageNgGridSettings.parameters.storage.requestData;
                        instance.showLoadPanel = false;
                        instance.showContent = true;
                    }
                    else {
                        // IF NO RESULT FETCHED THEN DEFER WILL SHOWS THE NO RECORDS FOUND AND HIDE THE LOADER
                        $defer.resolve($scope.model);
                        if (instance.pageNgGridSettings.parameters.storage.requestData.length == 0) {
                            $scope.isRefereshDisabled = true;
                        }
                    }
                });

            }
            instance.statusList =
[
{ header: "Active", propertyname: 'model.StatusInfo.1', propertyvalue: "Active" },
{ header: "Alert", propertyname: 'model.StatusInfo.1', propertyvalue: "Alert" },
{ header: "Grace", propertyname: 'model.StatusInfo.1', propertyvalue: "Grace" },
{ header: "Expired", propertyname: 'model.StatusInfo.1', propertyvalue: "Expired" },
];
            instance.flagsList = [
{ header: "Blocked", propertyname: 'model.IsBlocked', propertyvalue: true }
            ];

            instance.othersList = [
{ header: "Unverified Contacts", propertyname: "model.IsRAAUnVerifiedContacts", propertyvalue: true },
{ header: "For Sale", propertyname: "model.IsSale", propertyvalue: true },
{ header: "Premium", propertyname: 'model.IsPremium', propertyvalue: true }

 //{ header: "Shared Permissions", propertyname: "model.IsOwner", propertyvalue: false },
            ];

            instance.pageNgGridSettings.settings.reload();
        }
    });

    $scope.checkDomainStatus = function () {
        SyncStatus = $interval(function () {
            if ($scope.SyncDomainList != null && $scope.SyncDomainList.Batchid != null && $scope.SyncDomainList.Batchid != '') {
                httpRepository.domainList.CheckDomainStatus($scope.SyncDomainList.Batchid).then(function (res) {
                    var result = res.Result;
                    if (result != null) {
                        if (result.IsSuccess == false) {
                            //Resulr Error Case display Loader Message & Site Alert message
                            $scope.isRefereshDisabled = true;
                            $scope.pageNotification.alerts.clear();
                            $scope.pageNotification.alerts.addError(res.Msg, {
                                hasClose: true,
                                isAutoHide: false
                            });
                        }
                        else {
                            if (result.TotalCount != 0 && (result.CompletedCount + result.FailedCount) == result.TotalCount && result.IsUserNotified == false) {
                                //Sync completed case retrun message and stop the checkdomain staus, aslo enable the Refresh button.
                                $scope.isRefereshDisabled = false;
                                $scope.pageNotification.alerts.clear();
                                if (result.IsUserNotified == false) {
                                    $scope.pageNotification.alerts.addSuccess(res.Msg, {
                                        hasClose: true,
                                        isAutoHide: false
                                    });
                                }
                                $interval.cancel(SyncStatus);
                                //location.reload();
                            }
                            else if (result.TotalCount != 0 && (result.CompletedCount + result.FailedCount) != result.TotalCount) {
                                $scope.isRefereshDisabled = true;
                            }
                        }
                    }
                    if (res.Result == null && res.Error == true) {
                        //Result Retrun Null Case display this message
                        $scope.isRefereshDisabled = true;
                        $scope.pageNotification.alerts.clear();
                        if (res.Msg != '') {
                            $scope.pageNotification.alerts.addError(res.Msg, {
                                hasClose: true,
                                isAutoHide: false
                            });
                        }
                    }
                });
            }
        }, 1000 * 20);
    };

    $scope.ActionClickEvent = function (actionName, Parameter) {
        if (actionName.toUpperCase() == 'VERIFY CONTACTS') {
            $scope.VerifyContacts.onClick(Parameter);
        }
    }
    function createGridItemBehavior(item, pageBehavior) {
        return new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                instance.model = item;
                instance.model.ExpireDateTime = pageHelper.Date.dateFromJson(instance.model.ExpireDateTime);
                instance.model.ExpirationDateTitleValue = (instance.model.ExpireDateTime) ? $filter('date')(instance.model.ExpireDateTime, 'MMM d, yyyy') : null;
                instance.model.ExpirationDateSortValue = (instance.model.ExpireDateTime) ? instance.model.ExpireDateTime.getTime() : 0;

                instance.model.ExpirationDateCssClass = "date";
                if (instance.model.ExpirationDateStyle == "DateGrace")
                    instance.model.ExpirationDateCssClass = "date grace";
                if (instance.model.ExpirationDateStyle == "DateDanger")
                    instance.model.ExpirationDateCssClass = "date danger";
                if (instance.model.ExpirationDateStyle == "DateAlert")
                    instance.model.ExpirationDateCssClass = "date alert";

                for (index = 0; index < instance.model.ActionDetails.length; index++) {
                    if (instance.model.ActionDetails[index] == $scope.ActionType.Manage) {
                        //instance.model.ActionDetails[index].DestinationURL = "/domains/domaincontrolpanel/" + instance.model.DomainName;

                        instance.model.ActionDetails[index] = {};
                        instance.model.ActionDetails[index].DisplayText = "Manage";
                        instance.model.ActionDetails[index].DestinationURL = "/domains/domaincontrolpanel/" + instance.model.DomainName;
                    }
                    else if (instance.model.ActionDetails[index] == $scope.ActionType.Renew) {
                        instance.model.ActionDetails[index] = {};
                        instance.model.ActionDetails[index].DisplayText = "Renew";
                        instance.model.ActionDetails[index].DestinationURL = $scope.CmsWebAddToCartURL + "producttype=domains&action=renew&domainlist=" + instance.model.DomainName + "&from=manage";
                    }
                    else if (instance.model.ActionDetails[index] == $scope.ActionType.Reactivate) {
                        instance.model.ActionDetails[index] = {};
                        instance.model.ActionDetails[index].DisplayText = "Renew";
                        instance.model.ActionDetails[index].DestinationURL = $scope.CmsWebAddToCartURL + "producttype=domains&action=reactivate&domainlist=" + instance.model.DomainName + "&from=manage";
                    }
                    else if (instance.model.ActionDetails[index] == $scope.ActionType.ContactSupport) {
                        instance.model.ActionDetails[index] = {};
                        instance.model.ActionDetails[index].DisplayText = "Contact Support";
                        instance.model.ActionDetails[index].DestinationURL = "https://support.namecheap.com/index.php?/Tickets/Submit/RenderForm/44";
                    }
                    else if (instance.model.ActionDetails[index] == $scope.ActionType.VerifyContacts) {
                        instance.model.ActionDetails[index] = {};
                        instance.model.ActionDetails[index].DisplayText = "Verify Contacts";
                        instance.model.ActionDetails[index].DestinationURL = "#";
                        instance.model.ActionDetails[index].DomainName = instance.model.DomainName;
                    }
                    else if (instance.model.ActionDetails[index] == $scope.ActionType.SeeDetails) {
                        //instance.model.ActionDetails[index].DestinationURL = "/domains/domaincontrolpanel/" + instance.model.DomainName;

                        instance.model.ActionDetails[index] = {};
                        instance.model.ActionDetails[index].DisplayText = "See Details";
                        instance.model.ActionDetails[index].DestinationURL = "/domains/domaincontrolpanel/" + instance.model.DomainName;
                    }
                }
                instance.serviceAction = function (serviceAction) {
                    if (serviceAction.DestinationURL && serviceAction.DestinationURL != '') {
                        if (serviceAction.DestinationURL == "#") {
                            $scope.action(serviceAction.InputParams, serviceAction.DisplayText);
                        }
                        else
                            window.open(serviceAction.DestinationURL, "_self");
                    }
                    else {
                        alert('Execute another action');
                    }
                }

            },
            onSuccess: function (params) {
                var instance = this.instance;

                instance.asyncStatus(pageHelper.AsyncStatus.Active);
            },
            onActive: function (params) {
                var instance = this.instance;
            },
            onLoading: function (params) {
                var instance = this.instance;

            },
            onLocked: function (params) {
                var instance = this.instance;
            },
            onError: function (params) {
                var instance = this.instance;

            }
        });
    }

    $scope.uncheckCheckBoxes = function () {
        $scope.pageBehavior.pageNgGridSettings.parameters.selection.selectedItems = [];
        var data = $scope.pageBehavior.pageNgGridSettings.parameters.storage.requestData;
        for (i = 0; i < data.length; i++)
            if (data[i].$ncColumnSelected == true)
                data[i].$ncColumnSelected = false;
        $('div#chb_selectAllDomains').find('input[type="checkbox"]').removeAttr('checked');
    }   

    $scope.autoRenewClick = new pageHelper.AsyncStateBehavior({

        constructor: function () {
            var instance = this.instance;

            instance.domainWhoIsAutoRenew = function (model) {
                if ((model.EditCapabilityCsv != null && model.EditCapabilityCsv.indexOf('extend') != -1) || model.IsOwner) {

                    if (model.WGAutoRenew == null || model.WGAutoRenew == undefined || model.WGAutoRenew == isNaN)
                        model.WGAutoRenew = false;
                    if (model.AutoRenew == null || model.AutoRenew == undefined || model.AutoRenew == isNaN)
                        model.AutoRenew = false;
                    if (model.PDNSAutoRenew == null || model.PDNSAutoRenew == undefined || model.PDNSAutoRenew == isNaN)
                        model.PDNSAutoRenew = false;
                                        
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                    var showPrompt = function (title, content) {
                        return $modal.open({
                            templateUrl: "/Domains/PromptModalOpen",
                            controller: 'promptRemoveModalCtrl',
                            size: 'lg',
                            resolve: {
                                modalTitle: function () { return title; },
                                modalContent: function () { return content; }
                            }
                        });
                    }

                    var switchAutoRenew = function (switchFor, domainAutoRenew, whoisGuardAutoRenew, successCallback, errorCallback) {
                        httpRepository.domainList.domainWhoIsAutoRenew(switchFor, model.DomainName, domainAutoRenew, whoisGuardAutoRenew).then(function (result) {
                            result.sender = "AR_" + switchFor;
                            if (!result.Error)
                                result.Msg = $scope.DomainInfoRes.success_Alert_Dynamic_AssociatesDomainAutoRenew;
                            else
                                result.Msg = $scope.DomainInfoRes.error_Alert_Dynamic_AssociatesDomainAutoRenew;
                            instance.asyncStatus((!result.Error) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                            if (result.Error && errorCallback != null)
                                errorCallback();
                            else if (!result.Error && successCallback != null)
                                successCallback();
                        });
                    };

                    var switchPDNSAutoRenew = function (PDNSSubID, PDNSAutoRenew, successCallback, errorCallback) {

                        httpRepository.domainList.setPremiumDnsAutoRenew(PDNSSubID, PDNSAutoRenew).then(function (result) {
                            if (!result.Error)
                                result.Msg = $scope.DomainInfoRes.success_Alert_Dynamic_AssociatesDomainAutoRenew;
                            else
                                result.Msg = $scope.DomainInfoRes.error_Alert_Dynamic_AssociatesDomainAutoRenew;

                            instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                            if (result.Error && errorCallback != null)
                                errorCallback();
                            else if (!result.Error && successCallback != null)
                                successCallback();
                        });
                    };


                    var showValidPrompt = function (promptTitelMsg, promptContentMsg, domainAutoRenewFlag, whoisGuardAutoRenewFlag, premiumDNSAutoRenewFlag) {
                        var activeModalInstance = showPrompt(promptTitelMsg, promptContentMsg);
                        activeModalInstance.result.then(function () {
                            //Domain Auto-Renew
                            if (domainAutoRenewFlag != null)
                            {
                                switchAutoRenew("DOMAIN", model.AutoRenew, wgSwitch ? model.AutoRenew : model.WGAutoRenew, null, function () {
                                    model.AutoRenew = !model.AutoRenew;
                                });
                            }
                            //WG Auto-Renew
                            if (whoisGuardAutoRenewFlag != null)
                            {
                                if (model.IsWGEnabled != null && model.IsWGEnabled != undefined) {
                                    switchAutoRenew("WG", model.AutoRenew, wgSwitch ? model.AutoRenew : model.WGAutoRenew, null, function () {
                                        model.WGAutoRenew = !model.WGAutoRenew;
                                    });
                                }
                            }
                            //Premium DNS Auto-Renew
                            if (premiumDNSAutoRenewFlag != null)
                            {
                                if (model.PDNSSubID != undefined && model.PDNSSubID != null && model.PDNSSubID > 0) {
                                    switchPDNSAutoRenew(model.PDNSSubID, model.PDNSAutoRenew, null, function () {
                                        model.PDNSAutoRenew = !model.PDNSAutoRenew;
                                    });
                                }
                            }

                        }, function () {
                            if (domainAutoRenewFlag && whoisGuardAutoRenewFlag && premiumDNSAutoRenewFlag)
                            {
                                if (wgSwitch)
                                    model.WGAutoRenew = false;
                                if (pdnsSwitch)
                                    model.PDNSAutoRenew = false;
                                switchAutoRenew("DOMAIN", model.AutoRenew, model.WGAutoRenew, null, function () {
                                    model.AutoRenew = !model.AutoRenew;
                                });
                            }
                            else if (domainAutoRenewFlag && whoisGuardAutoRenewFlag && (premiumDNSAutoRenewFlag == null || !premiumDNSAutoRenewFlag))
                            {
                                model.WGAutoRenew = !model.WGAutoRenew;
                                switchAutoRenew("DOMAIN", model.AutoRenew, model.WGAutoRenew, null, function () {
                                    model.AutoRenew = !model.AutoRenew;
                                });
                            }
                            else if (domainAutoRenewFlag && (!whoisGuardAutoRenewFlag || whoisGuardAutoRenewFlag != null) && premiumDNSAutoRenewFlag)
                            {
                                model.PDNSAutoRenew = !model.PDNSAutoRenew;
                                switchAutoRenew("DOMAIN", model.AutoRenew, wgSwitch ? model.AutoRenew : model.WGAutoRenew, null, function () {
                                    model.AutoRenew = !model.AutoRenew;
                                });
                            }
                            else if (!domainAutoRenewFlag && !whoisGuardAutoRenewFlag && whoisGuardAutoRenewFlag != null && !premiumDNSAutoRenewFlag && premiumDNSAutoRenewFlag != null)
                            {
                                model.AutoRenew = !model.AutoRenew;
                                model.WGAutoRenew = !model.WGAutoRenew;
                                model.PDNSAutoRenew = !model.PDNSAutoRenew;
                                if (instance.activeNotification != null) {
                                    instance.activeNotification.destroy();
                                }
                            }
                            else if (!domainAutoRenewFlag && !whoisGuardAutoRenewFlag && (premiumDNSAutoRenewFlag || premiumDNSAutoRenewFlag == null))
                            {
                                model.AutoRenew = !model.AutoRenew;
                                model.WGAutoRenew = !model.WGAutoRenew;
                                if (instance.activeNotification != null) {
                                    instance.activeNotification.destroy();
                                }
                            }
                            else if (!domainAutoRenewFlag && (whoisGuardAutoRenewFlag || whoisGuardAutoRenewFlag == null) && !premiumDNSAutoRenewFlag)
                            {
                                model.AutoRenew = !model.AutoRenew;
                                model.PDNSAutoRenew = !model.PDNSAutoRenew;
                                if (instance.activeNotification != null) {
                                    instance.activeNotification.destroy();
                                }
                            }
                        });
                    };

                    var wgSwitch = !model.WGAutoRenew && model.IsWGEnabled != null;
                    var pdnsSwitch = !model.PDNSAutoRenew && model.PDNSSubID != null && model.PDNSSubID > 0;

                    if ((model.IsWGEnabled != null && model.IsWGEnabled != undefined) || (model.PDNSSubID != undefined && model.PDNSSubID != null && model.PDNSSubID > 0)) {

                        if (model.IsWGEnabled != null && model.IsWGEnabled != undefined) {
                            if (model.AutoRenew && wgSwitch)
                                model.WGAutoRenew = true;
                            else if (!model.AutoRenew)
                                model.WGAutoRenew = false;
                        }

                        if (model.PDNSSubID != undefined && model.PDNSSubID != null && model.PDNSSubID > 0) {
                            if (model.AutoRenew && pdnsSwitch)
                                model.PDNSAutoRenew = true;
                            else if (!model.AutoRenew)
                                model.PDNSAutoRenew = false;
                        }

                        if (model.AutoRenew && wgSwitch && pdnsSwitch && (model.PDNSSubID == undefined || model.IsPDNSActiveStatus != undefined))
                        {
                            showValidPrompt($scope.DomainInfoRes.prompt_Titel_AutoRenew_TurnOn, $scope.DomainInfoRes.prompt_Content_AutoRenew_PM1, true, true, true);
                        }
                        else if (model.AutoRenew && wgSwitch && !pdnsSwitch) {

                            var param = model.IsPDNSActiveStatus;
                            if (!pdnsSwitch && (model.PDNSSubID == undefined || !model.IsPDNSActiveStatus))
                                param = null;

                            showValidPrompt($scope.DomainInfoRes.prompt_Titel_AutoRenew_TurnOn, $scope.DomainInfoRes.prompt_Content_AutoRenew_PM2, true, true, param);
                        }
                        else if (model.AutoRenew && pdnsSwitch && !wgSwitch) {

                            var param = model.WGActiveStatus;
                            if (!wgSwitch && (model.WGActiveStatus == undefined || !model.WGActiveStatus))
                                param = null;

                            showValidPrompt($scope.DomainInfoRes.prompt_Titel_AutoRenew_TurnOn, $scope.DomainInfoRes.prompt_Content_AutoRenew_PM3, true, param, true);
                        }
                        else if (!model.AutoRenew && !wgSwitch && model.IsWGEnabled != undefined && !pdnsSwitch && model.PDNSSubID != undefined && model.PDNSSubID > 0) {

                            showValidPrompt($scope.DomainInfoRes.prompt_Titel_AutoRenew_TurnOff, $scope.DomainInfoRes.prompt_Content_AutoRenew_PM4, false, false, false);
                        }
                        else if (!model.AutoRenew && !wgSwitch && model.IsWGEnabled != undefined  && (pdnsSwitch || model.PDNSSubID == undefined || !model.IsPDNSActiveStatus)) {

                            var param = true;
                            if (pdnsSwitch || model.PDNSSubID == undefined || !model.IsPDNSActiveStatus)
                                param = null;
                            showValidPrompt($scope.DomainInfoRes.prompt_Titel_AutoRenew_TurnOff, $scope.DomainInfoRes.prompt_Content_AutoRenew_PM5, false, false, param);
                        }
                        else if (!model.AutoRenew && (wgSwitch || model.IsWGEnabled == undefined || !model.IsWGEnabled) && !pdnsSwitch && model.PDNSSubID != undefined && model.PDNSSubID > 0) {

                            var param = true;
                            if (wgSwitch || model.IsWGEnabled == undefined || !model.IsWGEnabled)
                                param = null;
                            showValidPrompt($scope.DomainInfoRes.prompt_Titel_AutoRenew_TurnOff, $scope.DomainInfoRes.prompt_Content_AutoRenew_PM6, false, param, false);
                        }
                        else if (!model.AutoRenew && wgSwitch && pdnsSwitch) {
                            switchAutoRenew("DOMAIN", model.AutoRenew, wgSwitch ? model.AutoRenew : model.WGAutoRenew, null, function () {
                                model.AutoRenew = !model.AutoRenew;
                            });
                        }
                        else {
                            switchAutoRenew("DOMAIN", model.AutoRenew, wgSwitch ? model.AutoRenew : model.WGAutoRenew, null, function () {
                                model.AutoRenew = !model.AutoRenew;
                            });
                        }

                    }
                    else {
                        switchAutoRenew("DOMAIN", model.AutoRenew, wgSwitch ? model.AutoRenew : model.WGAutoRenew, null, function () {
                            model.AutoRenew = !model.AutoRenew;
                        });
                    }
                }
                else {

                    model.AutoRenew = !model.AutoRenew;
                    $scope.pageNotification.stuckNotifications.addError('User has no rights to perform this action', {
                        hasClose: true,
                        isAutoHide: true
                    });
                }


                //if ((model.EditCapabilityCsv != null && model.EditCapabilityCsv.indexOf('extend') != -1) || model.IsOwner) {
                //    if (model.AutoRenew == null || model.AutoRenew == undefined || model.AutoRenew == isNaN)
                //        model.AutoRenew = false;

                //    instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                //    httpRepository.domainList.domainWhoIsAutoRenew("DOMAIN", model.DomainName, model.AutoRenew, false).then(function (result) {
                //        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                //    });

                //}
                //else {

                //    model.AutoRenew = !model.AutoRenew;
                //    $scope.pageNotification.stuckNotifications.addError('User has no rights to perform this action', {
                //        hasClose: true,
                //        isAutoHide: true
                //    });
                //}
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });

        },
        onActive: function (params) {
            var instance = this.instance;
            var result = params;
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Loading...', false);
        },
        onLocked: function (params) {
            var instance = this.instance;
            var result = params;
        },
        onError: function (params) {
            $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });
    $scope.VerifyContacts = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.onClick = function (domainName) {
                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                httpRepository.domainDetails.resendNotificationEmail(domainName).then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                });
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            if (params != undefined && params != null && params != '') {
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInfoRes.success_Alert_RegistrantResendNotification, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
        },
        onActive: function () {

        },
        onError: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError($scope.DomainInfoRes.failure_Alert_RegistrantResendNotification, {
                hasClose: true,
                isAutoHide: true
            });
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading($scope.DomainInfoRes.static_Loading_RegistrantResendNotification, true);
            //instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Loading...', false);
        }
    })
    $scope.OnViewChange = function (optionValue) {
        if(optionValue.toUpperCase()=='ALL')
        {
           
            window.location.href = "/domains/ChangeProductViewOption/" + optionValue;
        }

    }
    $scope.CheckSyncDomainList = function () {
        httpRepository.domainList.CheckSyncDomainList().then(function (res) {
            var result = res.Result;
            if (result != null) {
                if (res.Error == true) {
                    //Resulr Error Case display Loader Message & Site Alert message
                    $scope.isRefereshDisabled = false;
                    $scope.pageNotification.alerts.clear();
                    $scope.pageNotification.alerts.addError(result.Message.Msg, {
                        hasClose: true,
                        isAutoHide: false
                    });
                }
                else if (res.Error == false && (result.Message != null && result.Message != '' && result.Message.toLowerCase() == "norecords")) {
                    //When user No records to Refresh case no need to display message, only Enable the Refresh button.
                    $scope.isRefereshDisabled = false;
                    //No need to Display Message
                }
                else if (res.Error == false && (result.Message != null && result.Message != '' && result.Message.toLowerCase() == "notexist")) {
                    //When user not exist or new user case no need to display message, only Enable the Refresh button.
                    //$scope.isRefereshDisabled = false;
                    $scope.isRefereshDisabled = true;
                    //No need to Display Message
                }
                else if (res.Error == false && (result.Status == null)) {
                    //No error and status in null case no need to display message, only Enable the Refresh button. This case already sync done, no records to sync database retrun status null.
                    $scope.isRefereshDisabled = false;
                    //No need to Display Message
                }
                else if (res.Error == false && (result.Batchid == null || result.Batchid == '' || result.Batchid == undefined)) {
                    //Model retrun null value case display this error message 
                    $scope.isRefereshDisabled = false;
                    $scope.pageNotification.alerts.clear();
                    $scope.pageNotification.alerts.addSuccess(result.Message, {
                        hasClose: true,
                        isAutoHide: false
                    });
                }
                else {
                    //Sync completed case retrun message and stop the checkdomain staus, aslo enable the Refresh button.
                    if (result.Status != null && (result.Status.toLowerCase() == 'failed' || result.Status.toLowerCase() == 'complated' || result.Status.toLowerCase() == 'partiallycompleted')) {
                        $scope.isRefereshDisabled = false;
                        $scope.pageNotification.alerts.clear();
                        $scope.pageNotification.alerts.addSuccess(result.Message, {
                            hasClose: true,
                            isAutoHide: false
                        });
                    }
                    else {
                        //Sync process not yet completed case retrun message and continue the checkdomain staus, aslo disable the Refresh button.                      
                        $scope.SyncDomainList.Batchid = result.Batchid;
                        $scope.SyncDomainList.RecordCount = result.RecordCount;
                        $scope.SyncDomainList.Status = result.Status;
                        $scope.SyncDomainList.IsUserNotified = result.IsUserNotified;
                        $scope.pageNotification.alerts.clear();
                        if (result.MessageType != null && result.MessageType.toLowerCase() == 'warning') {
                            $scope.pageNotification.alerts.addWarning(result.Message, {
                                hasClose: true,
                                isAutoHide: false
                            });
                        }
                        else {
                            $scope.pageNotification.alerts.addSuccess(result.Message, {
                                hasClose: true,
                                isAutoHide: false
                            });
                        }
                        $scope.isRefereshDisabled = true;
                        $scope.checkDomainStatus();
                    }
                }
            }
            if (res.Result == null && res.Error == true) {
                //Result Retrun Null Case display this message
                $scope.pageNotification.alerts.clear();
                $scope.pageNotification.alerts.addError(result.Msg, {
                    hasClose: true,
                    isAutoHide: false
                });
            }
        });
    }

    $scope.syncDomainListBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.SyncDomainList = function () {
                $scope.isRefereshDisabled = true;
                //instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                httpRepository.domainList.SyncDomainList().then(function (res) {
                    var result = res.Result;
                    if (result != null) {
                        if (res.Error == true) {
                            //Resulr Error Case display Loader Message & Site Alert message
                            //instance.asyncStatus(pageHelper.AsyncStatus.Error, res);
                            $scope.pageNotification.alerts.clear();
                            $scope.pageNotification.alerts.addError(result.Message, $scope.syncAlertArguments);
                        }
                        else {
                            //Domain added queued case retrun message and continue the checkdomain staus, aslo disable the Refresh button.
                            $scope.SyncDomainList.Batchid = result.Batchid;
                            $scope.SyncDomainList.RecordCount = result.RecordCount;
                            $scope.SyncDomainList.Status = result.Status;
                            $scope.SyncDomainList.IsUserNotified = result.IsUserNotified;
                            $scope.pageNotification.alerts.clear();
                            if (result.MessageType != null && result.MessageType.toLowerCase() == 'warning') {
                                //instance.asyncStatus(pageHelper.AsyncStatus.Warning, res);
                                $scope.pageNotification.alerts.addWarning(result.Message, {
                                    hasClose: true,
                                    isAutoHide: false
                                });
                            }
                            else {
                                //instance.asyncStatus(pageHelper.AsyncStatus.Success, res);
                                $scope.pageNotification.alerts.addSuccess(result.Message, $scope.syncAlertArguments);
                            }
                            $scope.checkDomainStatus();

                        }
                    }
                    if (res.Result == null && res.Error == true) {
                        //Result Retrun Null Case display this message
                        //instance.asyncStatus(pageHelper.AsyncStatus.Error, res);
                        $scope.pageNotification.alerts.clear();
                        $scope.pageNotification.alerts.addError(res.Msg, $scope.syncAlertArguments);
                    }
                });
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            //instance.model = $scope.AssignCssClassForFields(params.Result.Data);
            if (params.Msg != '') {
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onWarning: function (params) {
            var instance = this.instance;
            $scope.pageNotification.alerts.clear();
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addWarning(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });
            instance.isDisabled = false;
            instance.showError = false;
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading("Processing", {
                hasClose: true,
                isAutoHide: true
            });
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });

    $scope.ActionType = {
        ContactSupport: 0,
        VerifyContacts: 1,
        Renew: 8,
        Manage: 11,
        SeeDetails: 30,
        Reactivate:29
    };
}]);;
app.controller('domainResolveConflictRedirectEmailCtrl', [
	'$scope', '$modalInstance', 'httpRepository', 'pageHelper', '$timeout', 'notificationService', '$filter', '$document', 'RedirectEmailViewModel', '$window', 'DomainName', 'PageFrom',
	function($scope, $modalInstance, httpRepository, pageHelper, $timeout, notificationService, $filter, $document, RedirectEmailViewModel, $window, DomainName, PageFrom) {

		$scope.pageHelper = pageHelper; //for call helpers methods from view
		$scope.pageNotification = new notificationService.instance();
		$scope.DomainInformationRes = DomainInfoRes;
		$scope.PageFrom = PageFrom;
		$scope.domainName = DomainName;
		$scope.emailType = RedirectEmailViewModel.EmailType;
		$scope.dnsType = RedirectEmailViewModel.DnsType;
		$scope.isRegisteredAtNamecheap = RedirectEmailViewModel.IsRegisteredAtNamecheap;
		$scope.isUsingNamecheapHosting = RedirectEmailViewModel.IsUsingNamecheapHosting;
		$scope.isUsingPrivateEmail = RedirectEmailViewModel.IsUsingPrivateEmail;
		$scope.isUsingFreeDns = RedirectEmailViewModel.IsUsingFreeDns;
		$scope.emailForwardersCount = RedirectEmailViewModel.EmailForwardersCount;

		$scope.isUsingCustomMXRecords = false;
		$scope.isUsingCustomDNS = false;

		$scope.resetUI = function() {
			$scope.modalTitle = $scope.domainName + ": ";
			$scope.showActionButtonGroup1 = false;
			$scope.showActionButtonGroup2 = false;
			$scope.showDoneButton = false;
			$scope.showSetUpcPanelRedirectButton = false;
			$scope.showSwitchDNSServersButton = false;
			$scope.showForm = false;

			$scope.showEmailRedirectInformation = false;
			$scope.showPrivateEmailSetupInformation = false;
			$scope.showEmailWithinHostingSetupInformation = false;
			$scope.showUsingHostingDNSSetupInformation = false;
			$scope.showPointDefaultDNSSetupInformation = false;
			$scope.showAnotherEmailServiceIsInUseInformation = false;
			$scope.showUsingThirdPartyDNSInformation = false;
		}

		$scope.resetUI();

		if ($scope.isUsingPrivateEmail) {
			if ($scope.isUsingNamecheapHosting) {
				if ($scope.isRegisteredAtNamecheap) {

					$scope.modalTitle = $scope.modalTitle + 'Redirect Email';

					$scope.showActionButtonGroup1 = true;

					$scope.showDoneButton = true;
					$scope.showSetUpcPanelRedirectButton = true;
					$scope.showSwitchDNSServersButton = true;

					$scope.showEmailRedirectInformation = true;
					$scope.showPrivateEmailSetupInformation = true;
					$scope.showUsingHostingDNSSetupInformation = true;
					$scope.showPointDefaultDNSSetupInformation = true;
				} else {
					$scope.modalTitle = $scope.modalTitle + 'Redirect Email';

					$scope.showActionButtonGroup1 = true;

					$scope.showDoneButton = true;
					$scope.showSetUpcPanelRedirectButton = true;

					$scope.showEmailRedirectInformation = true;
					$scope.showPrivateEmailSetupInformation = true;
					$scope.showUsingHostingDNSSetupInformation = true;
				}
			} else if ($scope.isRegisteredAtNamecheap) {

				$scope.modalTitle = $scope.modalTitle + 'Redirect Email';

				$scope.showActionButtonGroup1 = true;

				$scope.showDoneButton = true;
				$scope.showSwitchDNSServersButton = true;

				$scope.showEmailRedirectInformation = true;
				$scope.showPrivateEmailSetupInformation = true;
				$scope.showPointDefaultDNSSetupInformation = true;

				if ($scope.dnsType != 'Custom') {
					if (($scope.emailType != 'FWD')) {
						$scope.isUsingCustomMXRecords = true;
					}
				}
			} else {
				$scope.modalTitle = $scope.modalTitle + 'Redirect Email';

				$scope.showActionButtonGroup1 = true;

				$scope.showDoneButton = true;

				$scope.showEmailRedirectInformation = true;
				$scope.showPrivateEmailSetupInformation = true;
			}
		} else if ($scope.isUsingNamecheapHosting) {
			if ($scope.isRegisteredAtNamecheap) {

				$scope.modalTitle = $scope.modalTitle + 'Redirect Email';

				$scope.showActionButtonGroup1 = true;

				$scope.showDoneButton = true;
				$scope.showSwitchDNSServersButton = true;

				$scope.showEmailRedirectInformation = true;
				$scope.showUsingHostingDNSSetupInformation = true;
				$scope.showPointDefaultDNSSetupInformation = true;
			} else {

				$scope.modalTitle = $scope.modalTitle + 'Redirect Email';

				$scope.showActionButtonGroup1 = true;

				$scope.showDoneButton = true;

				$scope.showEmailRedirectInformation = true;
				$scope.showUsingHostingDNSSetupInformation = true;

			}
		} else if ($scope.dnsType == 'Custom') {
			// When domain is using Custom DNS            
			$scope.modalTitle = $scope.modalTitle + 'Solve Conflict';

			$scope.showForm = true;

			$scope.showActionButtonGroup2 = true;

			$scope.showUsingThirdPartyDNSInformation = true;

			$scope.isUsingCustomDNS = true;
		} else {
			// When domain is using default dns and it has custom MX record            
			$scope.modalTitle = $scope.modalTitle + 'Solve Conflict';

			$scope.showForm = true;

			$scope.showActionButtonGroup2 = true;

			$scope.showAnotherEmailServiceIsInUseInformation = true;

			$scope.isUsingCustomMXRecords = true;
		}

		$scope.switchDNSServersClick = function() {

			// Reset text and buttons
			$scope.resetUI();

			//Initiate new text and buttons for Switch Dns Servers            
			$scope.modalTitle = $scope.modalTitle + 'Solve Conflict';

			$scope.showForm = true;

			$scope.showActionButtonGroup2 = true;

			if ($scope.emailType != 'FWD') {
				$scope.isUsingCustomMXRecords = true;
			}

			if ($scope.dnsType == 'Custom') {
				$scope.isUsingCustomDNS = true;
			}

			if ($scope.isUsingCustomDNS) {
				$scope.showUsingThirdPartyDNSInformation = true;
			} else {
				$scope.showAnotherEmailServiceIsInUseInformation = true;
			}
		};

		$scope.setUpcPanelRedirectClick = function() {

			// Reset text and buttons
			$scope.resetUI();

			//Initiate new text and buttons for SetUp cPanel Redirect            
			$scope.modalTitle = $scope.modalTitle + 'Redirect Email';

			$scope.showActionButtonGroup1 = true;

			$scope.showDoneButton = true;

			$scope.showEmailRedirectInformation = true;
			$scope.showUsingHostingDNSSetupInformation = true;

			if ($scope.isRegisteredAtNamecheap) {
				$scope.showSwitchDNSServersButton = true;
				$scope.showPointDefaultDNSSetupInformation = true;
			}
		};

		$scope.checkBoxClick = function() {
			if ($scope.HasPassport) {
				$scope.showCheckBoxError = false;
			}
		};

		$scope.RedirectToManagePage = function(domainName, emailType) {
			var redirectLocationUrl = '/Domains/RedirectEmailList/' + domainName + '/' + $scope.PageFrom;

			if (emailType == 'NONE') {
				// Internally update email type and then redirect to manage page
				httpRepository.domainDetails.resolveConflictSetEmailType(domainName, emailType).then(function(result) {
					if (result.Error == false) {
						$window.location.href = redirectLocationUrl;
					};
				});
			} else if (emailType == 'FWD') {
				// Redirect to manage page
				$window.location.href = redirectLocationUrl;
			}
		}

		$scope.ShowPostLoader = function() {
			$('.opac').delay(25).queue(function() {
				$(this).addClass('page-load').css({ 'text-align': 'left', 'padding': '0em', 'opacity': '0.5', 'background-position': 'center 2.5em' });
			});
		}

		$scope.SaveChanges = new pageHelper.AsyncStateBehavior({
			constructor: function() {
				var instance = this.instance;
				instance.Click = function() {

					if ($scope.HasPassport) {
						$scope.showCheckBoxError = false;

						$scope.ShowPostLoader();

						if ($scope.emailType != 'FWD') {
							$scope.isUsingCustomMXRecords = true;
						}

						if ($scope.dnsType == 'Custom') {
							$scope.isUsingCustomDNS = true;
						}

						httpRepository.domainDetails.resolveConflictChangeDns($scope.domainName, $scope.isUsingCustomMXRecords, $scope.isUsingCustomDNS).then(function(result) {
							instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
						});
					} else {
						$scope.showCheckBoxError = true;
					}
				}
			},
			onSuccess: function(params) {
				var instance = this.instance;
				$scope.RedirectToManagePage($scope.domainName, "FWD");
			},
			onError: function(params) {
				var instance = this.instance;
				$modalInstance.close(params.Msg);
			}
		})

		$scope.cancelClick = function() {
			$modalInstance.close('');
		};
	}
]);;
app.controller('domainsBulkActionCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', 'pageHelper', 'ncGridParams',
function ($scope, $rootScope, httpRepository, $filter, $modal, pageHelper, ncGridParams) {
    $scope.DomainInfoRes = DomainInfoRes;
    $scope.pageBulkAction = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.PerformAction = function (action, domainSelectionType) {
                $scope.domainSelectionType = domainSelectionType;
                $scope.pageNotification.alerts.clear();
                var data = $scope.pageBehavior.pageNgGridSettings.parameters.selection.selectedItems;

                // Added to show a alert message if no domains are selected 
                if (data.length == 0) {
                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addWarning($scope.DomainInfoRes.alert_Site_AlertActionForEmptySelectionMessage, {
                        hasClose: true,
                        isAutoHide: true
                    });
                    return false;
                }

                if (action.toUpperCase() == 'whoisguard'.toUpperCase()) {
                    var domainNames = "";
                    for (i = 0; i < data.length; i++) {
                        domainNames = domainNames + data[i].model.DomainName.trim();
                        if (i > 1 || i < data.length - 1)
                            domainNames = domainNames + ",";
                    }
                    httpRepository.domainList.whoIsGuardBulkAction(domainNames);
                }
                else if (action.toLowerCase() == 'emailforwarding') {
                    var domainNames = "";
                    for (i = 0; i < data.length; i++) {
                        domainNames = domainNames + data[i].model.DomainName.trim();
                        if (i > 1 || i < data.length - 1)
                            domainNames = domainNames + ",";
                    }
                    httpRepository.domainList.EmailForwardingBulkaction(domainNames);
                }

                else if (action.toUpperCase() == 'contact'.toUpperCase()) {
                    var domainNames = "";
                    for (i = 0; i < data.length; i++) {
                        domainNames = domainNames + data[i].model.DomainName.trim();
                        if (i > 1 || i < data.length - 1)
                            domainNames = domainNames + ",";
                    }
                    httpRepository.domainList.contactsUpdateBulkAction(domainNames);
                }
                else if (action.toUpperCase() == 'renew'.toUpperCase()) {
                    var domainNames = "";
                    for (i = 0; i < data.length; i++) {
                        domainNames = domainNames + data[i].model.DomainName.trim();
                        if (i > 1 || i < data.length - 1)
                            domainNames = domainNames + ",";
                    }
                    httpRepository.domainList.RenewExpiringBulkAction(domainNames, $scope.domainSelectionType);
                }
                else if (action.toUpperCase() == 'autorenew'.toUpperCase()) {
                    var domainNames = "";
                    for (i = 0; i < data.length; i++) {
                        domainNames = domainNames + data[i].model.DomainName.trim();
                        if (i > 1 || i < data.length - 1)
                            domainNames = domainNames + ",";
                    }
                    httpRepository.domainListAction.AutoRenewBulkAction(domainNames).then(function (result) {
                        if (result != null && result.Result != null && result.Result.length > 0) {
                            DomainResult = result.Result;
                            $scope.openAutoRenewModalPopUp.Click(DomainResult);
                        }
                        else {
                            $scope.uncheckCheckBoxes();
                            $scope.pageNotification.alerts.addWarning($scope.DomainInfoRes.alert_Site_AutoRenewFailedMessage, {
                                hasClose: true,
                                isAutoHide: false
                            });
                        }
                    });

                }
                else if (action.toUpperCase() == 'transferout'.toUpperCase()) {

                    var domainNames = "";
                    for (i = 0; i < data.length; i++) {
                        domainNames = domainNames + data[i].model.DomainName.trim();
                        if (i > 1 || i < data.length - 1)
                            domainNames = domainNames + ",";
                    }
                    httpRepository.domainListAction.DomainLockBulkAction(domainNames).then(function (result) {
                        var TransferOutDomains = [];
                        var EppRequired = [];
                        var SupportRegLock = [];
                        var IsDomainOwner = [];
                        $scope.TransferDomainsList = {};
                        var eppCount = 0, domainLockCount = 0;

                        for (var lockCount = 0; lockCount < result.Result.length; lockCount++) {
                            TransferOutDomains[lockCount] = result.Result[lockCount].DomainName;
                            SupportRegLock[lockCount] = result.Result[lockCount].IsSupportRegLock;
                            EppRequired[lockCount] = result.Result[lockCount].IsEppRequired;
                            IsDomainOwner[lockCount] = result.Result[lockCount].IsOwner;

                            if (SupportRegLock[lockCount] && EppRequired[lockCount] == false) {
                                domainLockCount++;
                            }
                            else if (EppRequired[lockCount] && SupportRegLock[lockCount] == false) {
                                eppCount++;

                            }
                            else if (SupportRegLock[lockCount] && EppRequired[lockCount]) {
                                domainLockCount++;
                                eppCount++;
                            }

                        }

                        $scope.TransferDomainsList = {
                            TransferDomains: TransferOutDomains,
                            IsSupportRegLock: SupportRegLock,
                            IsEppRequired: EppRequired,
                            TotalDomainsCount: TransferOutDomains.length,
                            DomainLockCount: domainLockCount,
                            EppCount: eppCount,
                            IsOwner: IsDomainOwner
                        };

                        if (TransferOutDomains.length > 0) {
                            $scope.openDomainLockModalPopUp.Click($scope.TransferDomainsList);
                        }
                        else {
                            $scope.uncheckCheckBoxes();
                            $scope.pageNotification.alerts.addWarning($scope.DomainInfoRes.alert_Site_DomainLockFailedMessage, {
                                hasClose: true,
                                isAutoHide: false
                            });
                        }

                    });

                }
                else if (action.toUpperCase() == 'verifycontacts'.toUpperCase()) {
                    var domainNames = "";
                    for (i = 0; i < data.length; i++) {
                        domainNames = domainNames + data[i].model.DomainName.trim();
                        if (i > 1 || i < data.length - 1)
                            domainNames = domainNames + ",";
                    }
                    httpRepository.domainListAction.VerifyContactsBulkAction(domainNames).then(function (result) {
                        var VerifiedDomains = [];
                        for (var verifyCount = 0; verifyCount < result.Result.length; verifyCount++) {
                            VerifiedDomains[verifyCount] = result.Result[verifyCount].DomainName;
                        }
                        if (VerifiedDomains.length > 0) {
                            $scope.openVerifyContactsModalPopUp.Click(VerifiedDomains);
                        }
                        else {
                            $scope.uncheckCheckBoxes();
                            $scope.pageNotification.alerts.addWarning($scope.DomainInfoRes.alert_Site_VerifyContactsFailedMessage, {
                                hasClose: true,
                                isAutoHide: false
                            });
                        }
                    });
                }
                else if (action.toUpperCase() == 'addcategory'.toUpperCase()) {

                    var domainNames = "";
                    for (i = 0; i < data.length; i++) {
                        domainNames = domainNames + data[i].model.DomainName.trim();
                        if (i > 1 || i < data.length - 1)
                            domainNames = domainNames + ",";
                    }
                    $scope.openAllotDomainCategoryModalPopUp.Click(domainNames, data);
                }
                if (action.toUpperCase() == 'dnshost'.toUpperCase()) {
                    var domainNames = "";
                    for (i = 0; i < data.length; i++) {
                        domainNames = domainNames + data[i].model.DomainName.trim();
                        if (i > 1 || i < data.length - 1)
                            domainNames = domainNames + ",";
                    }
                    httpRepository.domainList.dnsHostBulkAction(domainNames);
                }
            }

            instance.asyncStatus(pageHelper.AsyncStatus.Success);
        },
        onSuccess: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;

        },
        onLoading: function (params) {
            var instance = this.instance;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });

    //Show Auto Renew Modal Window
    $scope.openAutoRenewModalPopUp = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.alerts;
            instance.showLoadPanel = true;
            instance.showContent = true;
            instance.model = {};
            var autorenewModalInstance = null;
            instance.Click = function (DomainResult) {
                var DomainDetails = $scope.domainServiceNames(DomainResult);
                autorenewModalInstance = $modal.open({
                    templateUrl: "/Domains/Autorenew",
                    controller: 'domainListActionCtrl',
                    size: 'lg',
                    backdrop: 'static',
                    keyboard: false,
                    resolve: {
                        serviceName: function () {
                            return DomainDetails.domainNames;
                        },
                        distinctDomainServiceType: function () {
                            return $scope.distinctDomainServiceTypes(DomainDetails.serviceTypes);
                        },
                        domainServiceTypes: function () {
                            return DomainDetails.serviceTypes;
                        },
                        additionalInfo: function () {
                            return DomainDetails.additionalInfoId;
                        },
                        DomainAutoRenew: function () {
                            return DomainDetails.IsDomainAutoRenew;
                        },
                        WGAutoRenew: function () {
                            return DomainDetails.IsWGAutoRenew;
                        },
                        PDNSAutoRenew: function () {
                            return DomainDetails.IsPDNSAutoRenew;
                        },
                        actionType: function () {
                            return "autorenew";
                        },
                        domainsCount: function () {
                            return DomainResult.length;
                        },
                        dataCategoryInitValues: function () {
                            return '';
                        },
                        commaSeperatedDomainNames: function () {
                            return '';
                        },
                        domainSelectionType: function () {
                            return $scope.domainSelectionType;
                        }
                    }
                });
                autorenewModalInstance.result.then(function (domainParams) {
                    $scope.uncheckCheckBoxes();
                    if (domainParams.params.Msg == "Success") {
                        //if (domainParams.renewOption == "Turn On") {
                        //    $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInfoRes.success_Site_SaveAutoRenewOnMessage, $scope.domainListnotificationAlertArguments)
                        //}
                        //else {
                        //    $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInfoRes.success_Site_SaveAutoRenewOffMessage, $scope.domainListnotificationAlertArguments)
                        //}
                        $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInfoRes.success_Alert_Dynamic_AssociatesDomainAutoRenew, $scope.domainListnotificationAlertArguments)
                    }
                    else if (domainParams.params.Msg == "Error") {
                        //$scope.pageNotification.stuckNotifications.addError($scope.DomainInfoRes.error_Site_SaveAutoRenewMessage, $scope.domainListnotificationAlertArguments)
                        $scope.pageNotification.stuckNotifications.addError($scope.DomainInfoRes.error_Alert_Dynamic_AssociatesDomainAutoRenew, $scope.domainListnotificationAlertArguments)
                    }
                }, function () {

                });
            }
            instance.asyncStatus(pageHelper.AsyncStatus.Loading);
        },
        onSuccess: function (params) {
            var instance = this.instance;
            if (params.sender == 'getAliases') {
                instance.model = params.Result;
                var temlAliasModelList = [];
                instance.model.MailboxAliases.forEach(function (element) {
                    temlAliasModelList.push(createAliasBehavior(element, instance));
                });
                instance.savedAliases = temlAliasModelList;
                instance.aliasesNgGrid.settings.reload();
            }
            instance.aliasesCount = instance.savedAliases.length;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = true;
            instance.showContent = false;
        },
        onLocked: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;
        },
        onError: function (params) {
            var instance = this.instance;
            if (params.sender == 'getAliases') {
                instance.showLoadPanel = false;
                instance.showContent = false;
                if (params.Msg == '') {
                    params.Msg = 'Internal Server Error';
                }
            }
            instance.activeNotification.clear();
            instance.activeNotification.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true,
                onDestroyed: function () {
                    instance.showError = false;
                }
            });
        }
    });

    //Show Domain Lock modal popup
    $scope.openDomainLockModalPopUp = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.alerts;
            instance.showLoadPanel = true;
            instance.showContent = true;
            instance.model = {};
            var domainLockModalInstance = null;
            instance.editAliasModalInstance = null;
            instance.Click = function (transferDomainsList) {
                domainLockModalInstance = $modal.open({
                    templateUrl: "/Domains/DomainLock",
                    controller: 'domainListActionCtrl',
                    size: 'lg',
                    backdrop: 'static',
                    keyboard: false,
                    resolve: {
                        serviceName: function () {
                            return JSON.stringify(transferDomainsList);
                        },
                        distinctDomainServiceType: function () {
                            return "";
                        },
                        domainServiceTypes: function () {
                            return "";
                        },
                        additionalInfo: function () {
                            return "";
                        },
                        DomainAutoRenew: function () {
                            return "";
                        },
                        WGAutoRenew: function () {
                            return "";
                        },
                        PDNSAutoRenew: function () {
                            return "";
                        },
                        actionType: function () {
                            return "reglock";
                        },
                        domainsCount: function () {
                            return transferDomainsList.TotalDomainsCount;
                        },
                        dataCategoryInitValues: function () {
                            return '';
                        },
                        commaSeperatedDomainNames: function () {
                            return '';
                        },
                        domainSelectionType: function () {
                            return '';
                        }

                    }
                });
                domainLockModalInstance.result.then(function (domainParams) {
                    $scope.uncheckCheckBoxes();
                    if (domainParams.params.Msg == "Success") {
                        if (domainParams.checked == true) {
                            $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInfoRes.alert_Site_SaveDomainLockCheckedSuccessMessage, $scope.domainListnotificationAlertArguments)
                        }
                        else {
                            $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInfoRes.alert_Site_SaveDomainLockNotCheckedSuccessMessage, $scope.domainListnotificationAlertArguments)
                        }
                    }
                    else if (domainParams.params.Msg == "Error") {
                        if (domainParams.lockOption == "Lock All") {
                            $scope.pageNotification.stuckNotifications.addError($scope.DomainInfoRes.error_Site_DomainLockOnMessage, $scope.domainListnotificationAlertArguments)
                        }
                        else {
                            $scope.pageNotification.stuckNotifications.addError($scope.DomainInfoRes.error_Site_DomainLockOffMessage, $scope.domainListnotificationAlertArguments)
                        }
                    }
                    //location.reload();
                }, function () {

                });
            }
            instance.asyncStatus(pageHelper.AsyncStatus.Loading);
        },
        onSuccess: function (params) {
            var instance = this.instance;
            if (params.sender == 'getAliases') {
                instance.model = params.Result;
                var temlAliasModelList = [];
                instance.model.MailboxAliases.forEach(function (element) {
                    temlAliasModelList.push(createAliasBehavior(element, instance));
                });
                instance.savedAliases = temlAliasModelList;
                instance.aliasesNgGrid.settings.reload();
            }

            instance.aliasesCount = instance.savedAliases.length;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = true;
            instance.showContent = false;
        },
        onLocked: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;
        },
        onError: function (params) {
            var instance = this.instance;
            if (params.sender == 'getAliases') {
                instance.showLoadPanel = false;
                instance.showContent = false;
                if (params.Msg == '') {
                    params.Msg = 'Internal Server Error';
                }
            }
            instance.activeNotification.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true,
                onDestroyed: function () {
                    instance.showError = false;
                }
            });
        }
    });

    //Show Verify Contacts Modal Window
    $scope.openVerifyContactsModalPopUp = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.alerts;
            instance.showLoadPanel = true;
            instance.showContent = true;
            instance.model = {};
            var verifyContactModalInstance = null;
            instance.editAliasModalInstance = null;
            instance.Click = function (verifiedDomains) {
                verifyContactModalInstance = $modal.open({
                    templateUrl: "/Domains/VerifyContacts",
                    controller: 'domainListActionCtrl',
                    size: 'lg',
                    backdrop: 'static',
                    keyboard: false,
                    resolve: {
                        serviceName: function () {
                            return verifiedDomains;
                        },
                        distinctDomainServiceType: function () {
                            return "";
                        },
                        domainServiceTypes: function () {
                            return "";
                        },
                        additionalInfo: function () {
                            return "";
                        },
                        DomainAutoRenew: function () {
                            return "";
                        },
                        WGAutoRenew: function () {
                            return "";
                        },
                        PDNSAutoRenew: function () {
                            return "";
                        },
                        actionType: function () {
                            return "verifyraa";
                        },
                        domainsCount: function () {
                            return verifiedDomains.length;
                        },
                        dataCategoryInitValues: function () {
                            return '';
                        },
                        commaSeperatedDomainNames: function () {
                            return '';
                        },
                        domainSelectionType: function () {
                            return '';
                        }
                    }
                });
                verifyContactModalInstance.result.then(function (result) {
                    $scope.uncheckCheckBoxes();
                    if (result == "Success") {
                        $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInfoRes.success_Site_ResendEmailSuccessMessage, $scope.domainListnotificationAlertArguments)
                    }
                    else if (result == "Error") {
                        $scope.pageNotification.stuckNotifications.addError($scope.DomainInfoRes.error_Site_ResendEmailErrorMessage, $scope.domainListnotificationAlertArguments)
                    }


                }, function () {
                    //verifyContactModalInstance = null;
                });

            }
            instance.aliasesNgGrid = new ncGridParams({
                sorting: { enabled: true }
            },
{
    getData: function ($defer, params) {
        $defer.resolve(instance.savedAliases);
    }
});
            instance.asyncStatus(pageHelper.AsyncStatus.Loading);
        },
        onSuccess: function (params) {
            var instance = this.instance;

            if (params.sender == 'getAliases') {
                instance.model = params.Result;
                var temlAliasModelList = [];
                instance.model.MailboxAliases.forEach(function (element) {
                    temlAliasModelList.push(createAliasBehavior(element, instance));
                });
                instance.savedAliases = temlAliasModelList;
                instance.aliasesNgGrid.settings.reload();
            }

            instance.aliasesCount = instance.savedAliases.length;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = true;
            instance.showContent = false;
        },
        onLocked: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;
        },
        onError: function (params) {
            var instance = this.instance;
            if (params.sender == 'getAliases') {
                instance.showLoadPanel = false;
                instance.showContent = false;
                if (params.Msg == '') {
                    params.Msg = 'Internal Server Error';
                }
            }
            instance.activeNotification.clear();

            instance.activeNotification.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true,
                onDestroyed: function () {
                    instance.showError = false;
                }
            });
        }
    });


    //Show Allot Domain Category Modal Window
    $scope.openAllotDomainCategoryModalPopUp = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.alerts;
            instance.showLoadPanel = true;
            instance.showContent = true;
            instance.model = {};
            var autorenewModalInstance = null;
            instance.Click = function (commaSeperatedDomainNames, data) {
                allotDomainCategoryModalInstance = $modal.open({
                    templateUrl: "/Domains/AllotCategory",
                    controller: 'domainListActionCtrl',
                    size: 'lg',
                    backdrop: 'static',
                    keyboard: false,
                    resolve: {
                        serviceName: function () {
                            return $scope.domainName(data);
                        },
                        distinctDomainServiceType: function () {
                            return '';
                        },
                        domainServiceTypes: function () {
                            return '';
                        },
                        additionalInfo: function () {
                            return '';
                        },
                        DomainAutoRenew: function () {
                            return "";
                        },
                        WGAutoRenew: function () {
                            return "";
                        },
                        PDNSAutoRenew: function () {
                            return "";
                        },
                        actionType: function () {
                            return '';
                        },
                        domainsCount: function () {
                            return '';
                        },
                        dataCategoryInitValues: function () {
                            return $scope.dataCategoryInitValues;
                        },
                        commaSeperatedDomainNames: function () {
                            return commaSeperatedDomainNames;
                        },
                        domainSelectionType: function () {
                            return '';
                        }
                    }
                });
                allotDomainCategoryModalInstance.result.then(function (domainParams) {
                    $scope.uncheckCheckBoxes();
                    if (domainParams.Call == "Success") {
                        var message = $scope.DomainInfoRes.success_Site_SaveAddCategoryMessage;

                        var newCategoryId = null;
                        var newCategory = $filter('propertyFilter')($scope.dataCategoryInitValues, { 'text': domainParams.CategoryName });
                        if (newCategory != null && newCategory.length > 0) {
                            newCategoryId = newCategory[0].id;
                        }
                        if (newCategoryId != null) {
                            data.forEach(function (element) {
                                element.model.Category = domainParams.CategoryName;
                                element.model.CategoryId = newCategoryId;
                            });
                        }

                        $scope.pageNotification.stuckNotifications.addSuccess(message.replace("{Category}", domainParams.CategoryName), $scope.domainListnotificationAlertArguments);
                    }
                    else if (domainParams.Call == "Error") {
                        var message = $scope.DomainInfoRes.error_Site_SaveAddCategoryMessage;
                        $scope.pageNotification.stuckNotifications.addError(message.replace("{Category}", domainParams.CategoryName), $scope.domainListnotificationAlertArguments);
                    }
                }, function () {

                });
            }
            instance.asyncStatus(pageHelper.AsyncStatus.Loading);
        },
        onSuccess: function (params) {
            var instance = this.instance;
            if (params.sender == 'getAliases') {
                instance.model = params.Result;
                var temlAliasModelList = [];
                instance.model.MailboxAliases.forEach(function (element) {
                    temlAliasModelList.push(createAliasBehavior(element, instance));
                });
                instance.savedAliases = temlAliasModelList;
                instance.aliasesNgGrid.settings.reload();
            }
            instance.aliasesCount = instance.savedAliases.length;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = true;
            instance.showContent = false;
        },
        onLocked: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;
        },
        onError: function (params) {
            var instance = this.instance;
            if (params.sender == 'getAliases') {
                instance.showLoadPanel = false;
                instance.showContent = false;
                if (params.Msg == '') {
                    params.Msg = 'Internal Server Error';
                }
            }
            instance.activeNotification.clear();
            instance.activeNotification.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true,
                onDestroyed: function () {
                    instance.showError = false;
                }
            });
        }
    });


    $scope.domainServiceNames = function (DomainResult) {
        var DomainNames = [];
        var ServiceTypes = [];
        var AdditionalInfoId = [];
        var IsDomainAutoRenew = [];
        var IsWGAutoRenew = [];
        var IsPDNSAutoRenew = [];
        var WGSlotId, WGActiveStatus;
        var PDNSSubID, PDNSActiveStatus;
        var dcount = 0;
        for (domaincount = 0; domaincount < DomainResult.length; domaincount++) {
            if ($scope.domainSelectionType.toUpperCase() == "ALL") {
                DomainNames[dcount] = DomainResult[domaincount].DomainName;
                ServiceTypes[dcount] = "Domains";
                IsDomainAutoRenew[dcount] = DomainResult[domaincount].AutoRenew;

                if (ServiceTypes[dcount] == 'Domains') {
                    WGSlotId = DomainResult[domaincount].WGSlotID;
                    //WGActiveStatus = DomainResult[domaincount].WGActiveStatus;
                    //if (WGSlotId != null && WGActiveStatus == true) {
                    if (WGSlotId != null) {
                        dcount++;
                        DomainNames[dcount] = DomainResult[domaincount].DomainName;
                        ServiceTypes[dcount] = "WhoisGuard";
                        IsWGAutoRenew[dcount] = DomainResult[domaincount].WGAutoRenew;
                    }

                    PDNSSubID = DomainResult[domaincount].PDNSSubID;
                    //PDNSActiveStatus = DomainResult[domaincount].PDNSActiveStatus;
                    //if (PDNSSubID != undefined && PDNSSubID != null && PDNSActiveStatus == true) {
                    if (PDNSSubID != undefined && PDNSSubID != null) {
                        dcount++;
                        DomainNames[dcount] = DomainResult[domaincount].DomainName;                        
                        ServiceTypes[dcount] = "PremiumDNS";
                        AdditionalInfoId[dcount] = DomainResult[domaincount].PDNSSubID;
                        IsPDNSAutoRenew[dcount] = DomainResult[domaincount].PDNSAutoRenew;
                    }
                }

                if (DomainResult[domaincount].ServiceTypeName != "SSL" && DomainResult[domaincount].ServiceTypeName != "SellDomains" && DomainResult[domaincount].ServiceTypeName != null) {
                    dcount++;
                    DomainNames[dcount] = DomainResult[domaincount].DomainName;
                    ServiceTypes[dcount] = DomainResult[domaincount].ServiceTypeName;
                    if (DomainResult[domaincount].ServiceTypeName == "PrivateEmail") {
                        AdditionalInfoId[dcount] = DomainResult[domaincount].SubscriptionId;
                    }
                    else if (DomainResult[domaincount].ServiceTypeName == "Hosting") {
                        AdditionalInfoId[dcount] = DomainResult[domaincount].PackageId;
                    }
                    else {
                        AdditionalInfoId[dcount] = null;
                    }
                }
                else {
                    if (DomainResult[domaincount].PDNSSubID == undefined && DomainResult[domaincount].PDNSSubID == 0)
                    AdditionalInfoId[dcount] = null;
                }
                dcount++;
            }
            else if ($scope.domainSelectionType.toUpperCase() == "DOMAINONLY") {
                DomainNames[dcount] = DomainResult[domaincount].DomainName;
                ServiceTypes[dcount] = "Domains";
                IsDomainAutoRenew[dcount] = DomainResult[domaincount].AutoRenew;

                if (ServiceTypes[dcount] == 'Domains') {
                    WGSlotId = DomainResult[domaincount].WGSlotID;
                    //WGActiveStatus = DomainResult[domaincount].WGActiveStatus;
                    //if (WGSlotId != null && WGActiveStatus == true) {
                    if (WGSlotId != null) {
                        dcount++;
                        DomainNames[dcount] = DomainResult[domaincount].DomainName;
                        ServiceTypes[dcount] = "WhoisGuard";
                        IsWGAutoRenew[dcount] = DomainResult[domaincount].WGAutoRenew;
                    }

                    PDNSSubID = DomainResult[domaincount].PDNSSubID;
                    //PDNSActiveStatus = DomainResult[domaincount].PDNSActiveStatus;
                    //if (PDNSSubID != undefined && PDNSSubID != null && PDNSActiveStatus == true) {
                    if (PDNSSubID != undefined && PDNSSubID != null) {
                        dcount++;
                        DomainNames[dcount] = DomainResult[domaincount].DomainName;
                        ServiceTypes[dcount] = "PremiumDNS";
                        AdditionalInfoId[dcount] = DomainResult[domaincount].PDNSSubID;
                        IsPDNSAutoRenew[dcount] = DomainResult[domaincount].PDNSAutoRenew;
                    }
                }
                dcount++;
            }
        }
        $scope.domainDetails = {
            domainNames: DomainNames,
            serviceTypes: ServiceTypes,
            additionalInfoId: AdditionalInfoId,
            IsDomainAutoRenew: IsDomainAutoRenew,
            IsWGAutoRenew: IsWGAutoRenew,
            IsPDNSAutoRenew: IsPDNSAutoRenew
        };
        return $scope.domainDetails;
    }

    $scope.distinctDomainServiceTypes = function (ServiceTypes) {
        var uniqueServiceTypes = [];
        $.each(ServiceTypes, function (i, service) {
            if ($.inArray(service, uniqueServiceTypes) === -1) uniqueServiceTypes.push(service)

        });
        return uniqueServiceTypes;
    }

    $scope.domainName = function (domainGroupModel) {
        var domainNames = [];
        for (var domaincount = 0; domaincount < domainGroupModel.length; domaincount++) {
            domainNames[domaincount] = domainGroupModel[domaincount].model.DomainName;
        }
        return domainNames;
    }

}]);;
app.controller('domainsCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'ncGridEventNames', 'domainTransferInService', '$interval', '$timeout','popupWindow','sslRepository','$window',
function ($scope, $rootScope, httpRepository, $filter, $modal, notificationService, pageHelper, $q, ncGridParams, $sce, ncGridEventNames, domainTransferInService, $interval, $timeout, popupWindow,sslRepository,$window) {
    //#region Local properties
    $scope.expirationDateStyle = {
        date: 0,
        dateGrace: 1,
        dateDanger: 2,
        dateAlert: 3
    }
    $scope.NoSearchOption = { minimumResultsForSearch: -1 };
    $scope.CategoryCurrentAction = '';
    $scope.pageHelper = pageHelper;//for call helpers methods from view
    $scope.pageNotification = new notificationService.instance();
    //#endregion
    $scope.syncAlertArguments = { isAutoHide: false, hasClose: true }
    $scope.domainListnotificationAlertArguments = { isAutoHide: true, hasClose: true }
    $scope.DomainInfoRes = DomainInfoRes;
    $scope.SSLInfoRes = SSLInfoRes;
    $scope.Message = {};
    $scope.domainDetails = {};
    $scope.SyncDomainList = {};
    $scope.isRefereshDisabled = false;
    $scope.alertPageFrom = $scope.$parent.alertPageFrom;
    $scope.currentDate = new Date();
    $scope.SymantecSunsetDate = new Date(SymantecSunsetDate);
    $scope.SymantecSunsetDate = $scope.SymantecSunsetDate.setDate($scope.SymantecSunsetDate.getDate() + 1);
    $scope.SymantecSunsetMasterKey = SymantecSunsetMasterKey;
    $scope.domainSelectionType = "ALL";
    
    var ErrorMessage = $scope.SSLInfoRes.static_ErrorMessage_SymantecSunset;
    var InsufficientErrorMessage = $scope.SSLInfoRes.static_InsufficentFundsErrorMsg;
    

    $scope.init = function (model) {
        $scope.isOverViewPage = model.isOverView;
        if (!$scope.isOverViewPage)
            $scope.CheckSyncDomainList();
        if (model.MessageType != null && model.Message != null) {
            if (model.MessageType.toLowerCase() == "alert")
                $scope.pageNotification.alerts.addWarning(model.Message, {
                    hasClose: true,
                    isAutoHide: false
                });
            else if (model.MessageType.toLowerCase() == "success")
                $scope.pageNotification.alerts.addSuccess(model.Message, {
                    hasClose: true,
                    isAutoHide: false
                });
            else if (model.MessageType.toLowerCase() == "error")
                $scope.pageNotification.alerts.addError(model.Message, {
                    hasClose: true,
                    isAutoHide: false
                });
        }
        if (model.InitModel != null) {
            if (model.InitModel.ActionType.toLowerCase() == "whoisguard") {
                $scope.WhoisGuardAddtoCartDomainList = model.InitModel.DomainList;
            }
        }
    }

    $scope.checkDomainStatus = function () {
        SyncStatus = $interval(function () {
            if ($scope.SyncDomainList != null && $scope.SyncDomainList.Batchid != null && $scope.SyncDomainList.Batchid != '') {
                httpRepository.domainList.CheckDomainStatus($scope.SyncDomainList.Batchid).then(function (res) {
                    var result = res.Result;
                    if (result != null) {
                        if (result.IsSuccess == false) {
                            //Resulr Error Case display Loader Message & Site Alert message
                            $scope.isRefereshDisabled = true;
                            $scope.pageNotification.alerts.clear();
                            $scope.pageNotification.alerts.addError(res.Msg, {
                                hasClose: true,
                                isAutoHide: false
                            });
                        }
                        else {
                            if (result.TotalCount != 0 && (result.CompletedCount + result.FailedCount) == result.TotalCount && result.IsUserNotified == false) {
                                //Sync completed case retrun message and stop the checkdomain staus, aslo enable the Refresh button.
                                $scope.isRefereshDisabled = false;
                                $scope.pageNotification.alerts.clear();
                                if (result.IsUserNotified == false) {
                                    $scope.pageNotification.alerts.addSuccess(res.Msg, {
                                        hasClose: true,
                                        isAutoHide: false
                                    });
                                }
                                $interval.cancel(SyncStatus);
                                //location.reload();
                            }
                            else if (result.TotalCount != 0 && (result.CompletedCount + result.FailedCount) != result.TotalCount) {
                                $scope.isRefereshDisabled = true;
                            }
                        }
                    }
                    if (res.Result == null && res.Error == true) {
                        //Result Retrun Null Case display this message
                        $scope.isRefereshDisabled = true;
                        $scope.pageNotification.alerts.clear();
                        if (res.Msg != '') {
                            $scope.pageNotification.alerts.addError(res.Msg, {
                                hasClose: true,
                                isAutoHide: false
                            });
                        }
                    }
                });
            }
        }, 1000 * 20);
    };
    $scope.AddWhoIsGuardToCart = function () {
        httpRepository.domainList.whoisguardbulkaddtocart($scope.WhoisGuardAddtoCartDomainList);
    }

    $scope.CheckSyncDomainList = function () {
        httpRepository.domainList.CheckSyncDomainList().then(function (res) {
            var result = res.Result;
            if (result != null) {
                if (res.Error == true) {
                    //Resulr Error Case display Loader Message & Site Alert message
                    $scope.isRefereshDisabled = false;
                    $scope.pageNotification.alerts.clear();
                    $scope.pageNotification.alerts.addError(result.Message.Msg, {
                        hasClose: true,
                        isAutoHide: false
                    });
                }
                else if (res.Error == false && (result.Message != null && result.Message != '' && result.Message.toLowerCase() == "norecords")) {
                    //When user No records to Refresh case no need to display message, only Enable the Refresh button.
                    $scope.isRefereshDisabled = false;
                    //No need to Display Message
                }
                else if (res.Error == false && (result.Message != null && result.Message != '' && result.Message.toLowerCase() == "notexist")) {
                    //When user not exist or new user case no need to display message, only Enable the Refresh button.
                    //$scope.isRefereshDisabled = false;
                    $scope.isRefereshDisabled = true;
                    //No need to Display Message
                }
                else if (res.Error == false && (result.Status == null)) {
                    //No error and status in null case no need to display message, only Enable the Refresh button. This case already sync done, no records to sync database retrun status null.
                    $scope.isRefereshDisabled = false;
                    //No need to Display Message
                }
                else if (res.Error == false && (result.Batchid == null || result.Batchid == '' || result.Batchid == undefined)) {
                    //Model retrun null value case display this error message 
                    $scope.isRefereshDisabled = false;
                    $scope.pageNotification.alerts.clear();
                    $scope.pageNotification.alerts.addSuccess(result.Message, {
                        hasClose: true,
                        isAutoHide: false
                    });
                }
                else {
                    //Sync completed case retrun message and stop the checkdomain staus, aslo enable the Refresh button.
                    if (result.Status != null && (result.Status.toLowerCase() == 'failed' || result.Status.toLowerCase() == 'complated' || result.Status.toLowerCase() == 'partiallycompleted')) {
                        $scope.isRefereshDisabled = false;
                        $scope.pageNotification.alerts.clear();
                        $scope.pageNotification.alerts.addSuccess(result.Message, {
                            hasClose: true,
                            isAutoHide: false
                        });
                    }
                    else {
                        //Sync process not yet completed case retrun message and continue the checkdomain staus, aslo disable the Refresh button.                      
                        $scope.SyncDomainList.Batchid = result.Batchid;
                        $scope.SyncDomainList.RecordCount = result.RecordCount;
                        $scope.SyncDomainList.Status = result.Status;
                        $scope.SyncDomainList.IsUserNotified = result.IsUserNotified;
                        $scope.pageNotification.alerts.clear();
                        if (result.MessageType != null && result.MessageType.toLowerCase() == 'warning') {
                            $scope.pageNotification.alerts.addWarning(result.Message, {
                                hasClose: true,
                                isAutoHide: false
                            });
                        }
                        else {
                            $scope.pageNotification.alerts.addSuccess(result.Message, {
                                hasClose: true,
                                isAutoHide: false
                            });
                        }
                        $scope.isRefereshDisabled = true;
                        $scope.checkDomainStatus();
                    }
                }
            }
            if (res.Result == null && res.Error == true) {
                //Result Retrun Null Case display this message
                $scope.pageNotification.alerts.clear();
                $scope.pageNotification.alerts.addError(res.Msg, {
                    hasClose: true,
                    isAutoHide: false
                });
            }
        });
    }

    $scope.syncDomainListBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.SyncDomainList = function () {
                $scope.isRefereshDisabled = true;
                //instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                httpRepository.domainList.SyncDomainList().then(function (res) {
                    var result = res.Result;
                    if (result != null) {
                        if (res.Error == true) {
                            //Resulr Error Case display Loader Message & Site Alert message
                            //instance.asyncStatus(pageHelper.AsyncStatus.Error, res);
                            $scope.pageNotification.alerts.clear();
                            $scope.pageNotification.alerts.addError(result.Message, $scope.syncAlertArguments);
                        }
                        else {
                            //Domain added queued case retrun message and continue the checkdomain staus, aslo disable the Refresh button.
                            $scope.SyncDomainList.Batchid = result.Batchid;
                            $scope.SyncDomainList.RecordCount = result.RecordCount;
                            $scope.SyncDomainList.Status = result.Status;
                            $scope.SyncDomainList.IsUserNotified = result.IsUserNotified;
                            $scope.pageNotification.alerts.clear();
                            if (result.MessageType != null && result.MessageType.toLowerCase() == 'warning') {
                                //instance.asyncStatus(pageHelper.AsyncStatus.Warning, res);
                                $scope.pageNotification.alerts.addWarning(result.Message, {
                                    hasClose: true,
                                    isAutoHide: false
                                });
                            }
                            else {
                                //instance.asyncStatus(pageHelper.AsyncStatus.Success, res);
                                $scope.pageNotification.alerts.addSuccess(result.Message, $scope.syncAlertArguments);
                            }
                            $scope.checkDomainStatus();

                        }
                    }
                    if (res.Result == null && res.Error == true) {
                        //Result Retrun Null Case display this message
                        //instance.asyncStatus(pageHelper.AsyncStatus.Error, res);
                        $scope.pageNotification.alerts.clear();
                        $scope.pageNotification.alerts.addError(res.Msg, $scope.syncAlertArguments);
                    }
                });
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            //instance.model = $scope.AssignCssClassForFields(params.Result.Data);
            if (params.Msg != '') {
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onWarning: function (params) {
            var instance = this.instance;
            $scope.pageNotification.alerts.clear();
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addWarning(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });
            instance.isDisabled = false;
            instance.showError = false;
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading("Processing", {
                hasClose: true,
                isAutoHide: true
            });
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });

    $scope.pageBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.showLoadPanel = true;
            instance.showContent = false;

            instance.model = null;
            instance.categoriesFilter = {
                list: [],
                check: function (categoryId) {
                    return $filter('propertyFilter')(this.list, { 'propertyvalue': categoryId })[0];
                },
                add: function (categoryId, categoryName) {
                    if (categoryId == null || categoryName == null) {
                        return;
                    }

                    var existCategory = this.check(categoryId);
                    if (existCategory) {
                        existCategory.usedCount++;
                    }
                    else {
                        this.list.push({ header: categoryName, propertyvalue: categoryId, usedCount: 1, propertyname: 'model.CategoryId' });
                    }
                },
                remove: function (categoryId) {
                    if (categoryId == null) {
                        return;
                    }
                    if (typeof categoryId === 'string' || categoryId instanceof String) {
                        categoryId = parseInt(categoryId);
                    }
                    var existCategory = this.check(categoryId);
                    if (existCategory) {
                        existCategory.usedCount--;
                        if (existCategory.usedCount == 0) {
                            this.list.splice(this.list.indexOf(existCategory), 1);
                            //remove from restricted properties in NcGrid
                            var ctrlSearchProp = $filter('propertyFilter')(instance.pageNgGridSettings.parameters.category.availableProperties, { 'propertyValue': categoryId })[0];
                            if (ctrlSearchProp) {
                                instance.pageNgGridSettings.parameters.category.availableProperties.splice(instance.pageNgGridSettings.parameters.category.availableProperties.indexOf(ctrlSearchProp), 1);
                            }
                        }
                    }
                }
            }
            instance.pageNgGridSettings = new ncGridParams();
            instance.pageNgGridSettings.parameters.search.serchPropertyNames = ['getServicesSearchProperties()', 'model.DomainName', 'model.Registrar', 'model.ExpirationDateTitleValue'];
            instance.pageNgGridSettings.parameters.mapping.renderChunkSize = 100;
            instance.pageNgGridSettings.parameters.mapping.serverChunkSize = DomainList_ChunkSize;
            var isOverViewPage = $("#pageOverview").val();
            instance.pageNgGridSettings.settings.getData = function ($defer, ncGridState) {
               
                instance.filterStatusPropertyNames = [];
                instance.filterFlagsPropertyNames = [];
                instance.filterFlagTrialPropertyName = [];
                instance.filterFlagNewPropertyName = [];
                httpRepository.domainList.getDomainList(ncGridState, isOverViewPage).then(function (result) {
                    var dataLength = 0;
                    if (result.Result != null && result.Result.Data != null) {
                        if (result.Msg != '' && result.Msg != null && result.Msg != undefined) {
                            instance.activeNotification = $scope.pageNotification.alerts.addSuccess(result.Msg, {
                                hasClose: true,
                                isAutoHide: true
                            });
                        }
                        dataLength = result.Result.Data.length;
                        result.Result.Data = $scope.AssignCssClassForFields(result.Result.Data);

                        for (var i = 0; i < dataLength; i++) {
                            result.Result.Data[i] = createGridItemBehavior(result.Result.Data[i], instance);
                        }
                        $defer.resolve(result.Result);
                        instance.pageNgGridSettings.settings.actions.updateDropDownBtns();
                        instance.model = instance.pageNgGridSettings.parameters.storage.requestData;

                    }
                    else {
                        // IF NO RESULT FETCHED THEN DEFER WILL SHOWS THE NO RECORDS FOUND AND HIDE THE LOADER
                        $defer.resolve(result.Result);
                        if (instance.pageNgGridSettings.parameters.storage.requestData.length == 0) {
                            $scope.isRefereshDisabled = true;
                        }
                    }

                    if ($scope.SymantecSunsetMasterKey == 1 && $scope.currentDate <= $scope.SymantecSunsetDate) {

                        $scope.IsSymantecCertExist = false;
                        for (index = 0; index < result.Result.Data.length; index++) {
                            for (indexService = 0; indexService < result.Result.Data[index].model.Services.length; indexService++) {
                                var objModel = result.Result.Data[index].model.Services[indexService];
                                if (objModel.ProductTypeString.toUpperCase() == 'SSL') {
                                    if (objModel.ProviderName.toLowerCase() != 'comodo'
                                        && (objModel.SSLStatus.toLowerCase() == 'newrenewal'
                                            ||
                                            objModel.SSLStatus.toLowerCase() == 'newpurchase')
                                        ) {
                                        $scope.IsSymantecCertExist = true;
                                        break;
                                    }
                                }
                            }
                        }

                        if ($scope.IsSymantecCertExist == true) {
                            $scope.$parent.HasSymantecCertificate = 1;
                            if ($scope.alertPageFrom != 'dashboard') {
                                $scope.HasSymantecCert = true;
                            }
                        }
                    }
                    else if ($scope.SymantecSunsetMasterKey == 1 && $scope.currentDate > $scope.SymantecSunsetDate) {
                        for (index = 0; index < result.Result.Data.length; index++) {
                            for (indexService = 0; indexService < result.Result.Data[index].model.Services.length; indexService++) {
                                var objModel = result.Result.Data[index].model.Services[indexService];
                                if (objModel.ProductTypeString.toUpperCase() == 'SSL') {
                                    if (objModel.ProviderName.toLowerCase() != 'comodo'
                                        && objModel.Actions[0].DisplayText.toLowerCase() == 'renew') {
                                        $scope.$parent.HasSymantecRenewCertificate = 1;
                                        $scope.$parent.HasSymantecCertificate = 1;
                                        if ($scope.alertPageFrom != 'dashboard') {
                                            $scope.HasSymantecRenewCert = true;
                                            $scope.HasSymantecCert = true;

                                        }
                                        break;
                                    }
                                }
                            }
                        }
                    }
                 
                });
            }

            instance.pageNgGridSettings.eventListener.then(function (eventScope) {
                eventScope.$on(ncGridEventNames.ncGridRenderPageBefore, function (event, parameters) {
                    instance.pageNgGridSettings.parameters.storage.pageData.forEach(function (element) {
                        element.isExpand = false;
                        element.isFilterMatches = false;
                        for (var index = 0; index < element.model.Services.length; index++) {
                            element.model.Services[index].inFilterScope = null;
                            element.model.Services[index].inSearchScope = true;
                        }
                    });
                });
            });
            instance.pageNgGridSettings.settings.reload();
            httpRepository.domainList.getCategories().then(function (result) {
                $scope.dataCategoryInitValues = [];
                if (result.Result != null) {
                    var tempList = [];
                    for (var i = 0; i < result.Result.length; i++) {
                        tempList.push({ id: result.Result[i].CategoryId, text: result.Result[i].CategoryHeader });
                    }
                    $scope.dataCategoryInitValues = tempList;
                }
            });

            instance.statusList =
		[
 { header: "Active", propertyname: 'getServicesPropertiesPath(ProductStatusString)', propertyvalue: "Active" },
 { header: "Alert", propertyname: 'getServicesPropertiesPath(ProductStatusString)', propertyvalue: "Alert" },
 { header: "Grace", propertyname: 'getServicesPropertiesPath(ProductStatusString)', propertyvalue: "Grace" },
 { header: "Expired", propertyname: 'getServicesPropertiesPath(ProductStatusString)', propertyvalue: "Expired" },
		];


            instance.flagsList = [
 { header: "Trial", propertyname: "getServicesPropertiesPath(IsTrial)", propertyvalue: true },
 { header: "Blocked", propertyname: 'getServicesPropertiesPath(ProductStatusString)', propertyvalue: "AlertBlocked" }

            ];
	        
            instance.othersList = [
 { header: "New", propertyname: "getServicesPropertiesPath(IsNew)", propertyvalue: true },
 { header: "Unverified Contacts", propertyname: "model.IsRAAUnVerifiedContacts", propertyvalue: true },
 { header: "Pending Transfer", propertyname: "getServicesPropertiesPath(IsInTransfer)", propertyvalue: true },
 { header: "Premium", propertyname: 'getIsPremium()', propertyvalue: true },
 { header: "For Sale", propertyname: "getServicesPropertiesPath(IsSale)", propertyvalue: true },
			 { header: "Shared Permissions", propertyname: "model.IsManaging", propertyvalue: true },
             { header: "PremiumDNS", propertyname: "getIsPremiumDNS()", propertyvalue: true },
            ];
            instance.registrarsList = [
			 { header: "Namecheap", propertyname: "model.IsNamecheapDomain", propertyvalue: true },
			 { header: "Others", propertyname: "model.IsNamecheapDomain", propertyvalue: false },
            ];

            instance.bulkActions = {
                changeOwnership: function () {
                    if (instance.pageNgGridSettings.parameters.selection.selectedItems.length == 0) {
                        return;
                    }
                    var redirectUrl = "/Domains/BulkChangeOwnership?productList=";
                    var productList = [];
                    instance.pageNgGridSettings.parameters.selection.selectedItems.forEach(function (element) {
                        productList.push(element.model.DomainName);
                    });
                    redirectUrl += productList;
                    window.location.href = redirectUrl;
                }
            }

            instance.asyncStatus(pageHelper.AsyncStatus.Success);

            if ($scope.SymantecSunsetMasterKey == 1 && $scope.currentDate > $scope.SymantecSunsetDate) {
                if ($window.localStorage.length > 0) {
                    var notificationResult = popupWindow.replaceOrRefundResult();

                    if (notificationResult.isError != null) {
                        if ((notificationResult.isError === 'false')) {
                            if (notificationResult.action == 'replace') {
                                var ReplaceSuccessMesage = $scope.SSLInfoRes.static_Replace_SuccessMessage;
                                $scope.pageNotification.stuckNotifications.addSuccess(ReplaceSuccessMesage, {
                                    hasClose: true,
                                    isAutoHide: true
                                });
                            }
                            else {
                                var RefundSuccessMesage = $scope.SSLInfoRes.static_Refund_SuccessMessage;
                                $scope.pageNotification.stuckNotifications.addSuccess(RefundSuccessMesage.replace("{0}", notificationResult.symantecCertType), {
                                    hasClose: true,
                                    isAutoHide: true
                                });
                            }
                        }
                        else {
                            var InsufficientErrorMsg = ((notificationResult.Message).indexOf('INSUFFICIENTFUNDS') > -1) ? 1 : 0;
                            if (InsufficientErrorMsg) {
                                $scope.pageNotification.stuckNotifications.addError(InsufficientErrorMessage.replace("{0}", ServerName), {
                                    hasClose: true,
                                    isAutoHide: false
                                });
                            }
                            else {
                                $scope.pageNotification.stuckNotifications.addError(ErrorMessage, {
                                    hasClose: true,
                                    isAutoHide: true
                                });
                            }
                        }
                    }
                    $window.localStorage.clear();
                }
            }

        },
        onSuccess: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;

        },
        onLoading: function (params) {
            var instance = this.instance;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });


    $scope.uncheckCheckBoxes = function () {
        $scope.pageBehavior.pageNgGridSettings.parameters.selection.selectedItems = [];
        var data = $scope.pageBehavior.pageNgGridSettings.parameters.storage.requestData;
        for (i = 0; i < data.length; i++)
            if (data[i].$ncColumnSelected == true)
                data[i].$ncColumnSelected = false;
        $('div#chb_selectAllDomains').find('input[type="checkbox"]').removeAttr('checked');
    }



    $scope.AssignCssClassForFields = function (model) {
        
        //CONDITION TO CHECK MODEL IS NULL OR UNDEFINED
        if (model != null && model != undefined) {
            //CONDITION TO MAKE SURE MODEL LENGTH IS > 0
            if (model.length > 0) {

                for (index = 0; index < model.length; index++) {
                    if (model[index].ContextualMessage != undefined && model[index].ContextualMessage != null && (model[index].ContextualMessage.toLowerCase() == 'some products are blocked' || model[index].ContextualMessage.toLowerCase() == 'hosting is blocked' || model[index].ContextualMessage.toLowerCase() == 'domain and whoisguard are blocked'))
                        model[index].IsBlockedContextualMessage = true;
                    else
                        model[index].IsBlockedContextualMessage = false;
                    // DYNAMICALLY ADD DomainNameCssClass PROPERTY TO GET THE APPROPRIATE CSS FOR THE COLUMN 0 DOMAIN NAME
                    model[index].DomainNameCssClass = "";

                    if (!model[index].IsNamecheapDomain) {
                        model[index].DomainNameCssClass = "transfer-in";
                    }
                    else if (model[index].IsNamecheapDomain && !model[index].IsDomainOwner && (model[index].EditCapabilityCsv != '' && model[index].EditCapabilityCsv != undefined)) {
                        model[index].DomainNameCssClass = "with-rights";
                    }
                    else if (model[index].IsNamecheapDomain && !model[index].IsDomainOwner && (model[index].EditCapabilityCsv == '' || model[index].EditCapabilityCsv == undefined || model[index].EditCapabilityCsv == null)) {
                        model[index].DomainNameCssClass = "without-rights";
                    }
	                
                    model[index].ExpirationDate = pageHelper.Date.dateFromJson(model[index].ExpirationDate);

                    if (model[index].Services.length > 0) {
                        if (model[index].Services[0].WGExpireDateTime != undefined && model[index].Services[0].WGExpireDateTime != null && model[index].Services[0].WGExpireDateTime != '' && model[index].Services[0].WGExpireDateTime != isNaN)
                            model[index].Services[0].WGExpireDateTime = pageHelper.Date.dateFromJson(model[index].Services[0].WGExpireDateTime);
                        for (indexService = 0; indexService < model[index].Services.length; indexService++) {
                            model[index].Services[indexService].ExpirationDate = pageHelper.Date.dateFromJson(model[index].Services[indexService].ExpirationDate);
                            model[index].Services[indexService].CssClass = '';
                            model[index].Services[indexService].SpanCssClass = '';
                            if (model[index].Services[indexService].ProductTypeString != null && model[index].Services[indexService].ProductTypeString != undefined && model[index].Services[indexService].ProductTypeString != "") {


                                if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'DOMAIN') {
                                    //bala
                                    if (model[index].Services[indexService].IsFreeDns == true) {
                                        //alert(model[index].Services[indexService].ProductStatusString);
                                        if (model[index].Services[indexService].ProductStatusString == 'Active') {
                                            model[index].Services[indexService].CssClass = 'icon-only icon-domain-freedns-active';
                                        }
                                        else {
                                            model[index].Services[indexService].CssClass = 'icon-only icon-domain-freedns-inactive';
                                        }
                                    }
                                    else {
                                        
                                        $scope.addfadeclass = "";
                                        if (!model[index].IsManaging && !model[index].IsDomainOwner && model[index].IsNamecheapDomain)
                                        {
                                            $scope.addfadeclass = "icon-fade";
                                        }

                                        if (model[index].Services[indexService].WGActiveStatus == true)
                                            model[index].Services[indexService].CssClass = 'icon-only ' + $scope.addfadeclass + ' icon-domain-whoisguard-active';
                                        else if (model[index].Services[indexService].WGActiveStatus == false)
                                            model[index].Services[indexService].CssClass = 'icon-only ' + $scope.addfadeclass + ' icon-domain-whoisguard-inactive';
                                        else
                                            model[index].Services[indexService].CssClass = 'icon-only ' + $scope.addfadeclass + ' icon-domain';


                                        if (model[index].Services[indexService].IsPDNSAvailable == true && model[index].Services[indexService].IsPDNSActive == true && model[index].Services[indexService].PDNSSubID != null && model[index].Services[indexService].PDNSSubID > 0 && model[index].ProviderSubType.toUpperCase() == 'PREMIUM')
                                            model[index].Services[indexService].CssClass = model[index].Services[indexService].WGActiveStatus != null ? model[index].Services[indexService].CssClass + ' icon-domain-pdns-active':'icon-only ' + $scope.addfadeclass + ' icon-domain-pdns-active';
                                        else if (model[index].Services[indexService].IsPDNSAvailable == true && model[index].Services[indexService].IsPDNSActive == true && model[index].Services[indexService].PDNSSubID != null && model[index].Services[indexService].PDNSSubID > 0 && model[index].ProviderSubType.toUpperCase() != 'PREMIUM')
                                            model[index].Services[indexService].CssClass = model[index].Services[indexService].WGActiveStatus != null ? model[index].Services[indexService].CssClass + ' icon-domain-pdns-inactive' : 'icon-only ' + $scope.addfadeclass + ' icon-domain-pdns-inactive';

                                    }
                                }
                                else if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'HOSTING') {
                                    model[index].Services[indexService].CssClass = 'icon-only icon-hosting';
                                }
                                else if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'PRIVATEEMAIL') {
                                    model[index].Services[indexService].CssClass = 'icon-only icon-email';
                                }
                                else if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'SELLDOMAINS' || model[index].Services[indexService].ProductTypeString.toUpperCase() == 'FREEDNS') {
                                    if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'SELLDOMAINS')
                                        model[index].Services[indexService].IsSellDomain = true;
                                    if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'FREEDNS')
                                        model[index].Services[indexService].IsFreeDns = true;
                                    if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'SELLDOMAINS') {
                                        model[index].Services[indexService].CssClass = 'icon-only icon-domain';
                                    }
                                    //bala
                                    if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'FREEDNS') {
                                        if (model[index].Services[indexService].ProductStatusString == 'Active') {
                                            model[index].Services[indexService].CssClass = 'icon-only icon-subdomain-freedns-active';
                                        }
                                        else {
                                            model[index].Services[indexService].CssClass = 'icon-only icon-subdomain-freedns-inactive';
                                        }
                                    }

                                }
                                else if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'SSL')
                                {
                                    if (model[index].Services[indexService].ProviderName != null && model[index].Services[indexService].ProviderName != undefined && model[index].Services[indexService].ProviderName == 'COMODO'){
                                        model[index].Services[indexService].CssClass = 'icon-only strong icon-ssl-comodo';
                                        if (model[index].Services[indexService].Name == 'PositiveSSL FREE')
                                        {
                                            model[index].Services[indexService].Name = "PositiveSSL";
                                            model[index].Services[indexService].IsPromo = true;  
                                        }
                                                                                                 
                                    }
                                    else if (model[index].Services[indexService].ProviderName != null && model[index].Services[indexService].ProviderName != undefined && model[index].Services[indexService].ProviderName == 'GEOTRUST')
                                        model[index].Services[indexService].CssClass = 'icon-only strong icon-ssl-geotrust';
                                    else if (model[index].Services[indexService].ProviderName != null && model[index].Services[indexService].ProviderName != undefined && model[index].Services[indexService].ProviderName == 'THAWTE')
                                        model[index].Services[indexService].CssClass = 'icon-only strong icon-ssl-thawte';
                                    else
                                        model[index].Services[indexService].CssClass = 'icon-only strong icon-ssl-symantec';
                                }
                                else if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'MAILCHIMP') {
                                    model[index].Services[indexService].CssClass = 'icon-only strong icon-mailchimp';
                                }
                                else if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'GOOGLE') {
                                    model[index].Services[indexService].CssClass = 'icon-only strong icon-google';
                                }
                            }

                            // THIS IS TO GET THE SPAN CSS CLASS FOR THE STATUS LIEK ACTIVE, EXPIRED, GRACE etc.
                            if (model[index].Services[indexService].ProductStatusString != null && model[index].Services[indexService].ProductStatusString != undefined && model[index].Services[indexService].ProductStatusString != '') {
                                model[index].Services[indexService].SpanCssClass = $scope.GetCssClassForStatus(model[index].Services[indexService].ProductStatusString)
                                //bala
                                if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'FREEDNS') {
                                    model[index].Services[indexService].SpanCssClass = '';
                                }
                            }

                            //GENERATE TEXT FOR THE STATUS LIST ITEM
                            model[index].Services[indexService].Status = [];

                            if (model[index].Services[indexService].Name != undefined && model[index].Services[indexService] != null && model[index].Services[indexService] != "") {
                                if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'SSL') {
                                    model[index].Services[indexService].Status.push(model[index].Services[indexService].Name);
                                    model[index].Services[indexService].Status.push(model[index].Services[indexService].ProductTypeDescription);
                                }
                                else
                                    model[index].Services[indexService].Status.push(model[index].Services[indexService].Name);
                            }
                            if (model[index].Services[indexService].ProductStatusString != undefined && model[index].Services[indexService].ProductStatusString != null && model[index].Services[indexService].ProductStatusString != "") {
                                model[index].Services[indexService].Status.push("<strong>Status:</strong> " + model[index].Services[indexService].ProductStatusString);
                            }

                            if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'DOMAIN') {
                                if (model[index].Services[indexService].WGActiveStatus == true)
                                    model[index].Services[indexService].Status.push("<strong>WhoisGuard: </strong>Active");
                                else if (model[index].Services[indexService].WGActiveStatus == false)
                                    model[index].Services[indexService].Status.push("<strong>WhoisGuard: </strong>InActive");

                                if (model[index].Services[indexService].IsPDNSAvailable == true && model[index].Services[indexService].IsPDNSActive == true && model[index].Services[indexService].PDNSSubID != null && model[index].Services[indexService].PDNSSubID > 0)
                                {
                                    if (model[index].ProviderSubType.toUpperCase() == 'PREMIUM')
                                    {
                                        model[index].Services[indexService].Status.push("<strong>PremiumDNS: </strong>Active");
                                    }
                                    else if (model[index].ProviderSubType.toUpperCase() != 'PREMIUM')
                                    {
                                        model[index].Services[indexService].Status.push("<strong>PremiumDNS: </strong>InActive");
                                    }                                    
                                }
                            }

                            if (model[index].Services[indexService].DueDate != undefined && model[index].Services[indexService].DueDate != null && model[index].Services[indexService].DueDate != "") {
                                model[index].Services[indexService].DueDate = pageHelper.Date.dateFromJson(model[index].Services[indexService].DueDate);
                                model[index].Services[indexService].Status.push("<strong>Due Date:</strong> " + $filter('date')(new Date(model[index].Services[indexService].DueDate), 'MMM dd, yyyy'));
                            }
                            if (model[index].Services[indexService].ExpirationDate != undefined && model[index].Services[indexService].ExpirationDate != null && model[index].Services[indexService].ExpirationDate != "") {
                                model[index].Services[indexService].Status.push("<strong>Expiration:</strong> " + $filter('date')(new Date(model[index].Services[indexService].ExpirationDate), 'MMM dd, yyyy'));
                            }
                            if (model[index].Services[indexService].ProductTypeString.toUpperCase() != 'DOMAIN' && (model[index].Services[indexService].TrailEndInDays != undefined && model[index].Services[indexService].TrailEndInDays != null && model[index].Services[indexService].TrailEndInDays != "")) {
                                model[index].Services[indexService].Status.push("<strong>Trial:</strong> " + "Ends in " + model[index].Services[indexService].TrailEndInDays + " days");
                            }

                        }
                    }

                }


            }

        }

        return model;
    }

    $scope.GetCssClassForStatus = function (Status) {
        var cssClass = '';
        if (Status.toUpperCase() == 'ACTIVE' || Status.toUpperCase() == 'ACTIVETRIAL' || Status.toUpperCase() == 'ACTIVEBLOCKED') {
            cssClass = 'ok';
        }
        else if (Status.toUpperCase() == 'EXPIRED') {
            cssClass = 'danger';
        }
        else if (Status.toUpperCase() == 'ALERT' || Status.toUpperCase() == 'ALERTTRIAL' || Status.toUpperCase() == 'ALERTBLOCKED') {
            cssClass = 'alert';
        }
        else if (Status.toUpperCase() == 'GRACE') {
            cssClass = 'grace';
        }
        
        return cssClass;
    }

    function createGridItemBehavior(item, pageBehavior) {
        return new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                instance.model = item;
                instance.isExpand = false;
                instance.model.ExpirationDateTitleValue = (instance.model.ExpirationDate)?$filter('date')(instance.model.ExpirationDate, 'MMM d, yyyy'):null;
                instance.model.ExpirationDateSortValue = (instance.model.ExpirationDate) ? instance.model.ExpirationDate.getTime() : 0;
                instance.model.Registrar = instance.model.IsNamecheapDomain ? "NAMECHEAP" : "OTHERS";

                instance.model.ExpirationDateCssClass = "date";
                if (instance.model.ExpirationDateStyle == $scope.expirationDateStyle.dateGrace)
                    instance.model.ExpirationDateCssClass = "date grace";
                if (instance.model.ExpirationDateStyle == $scope.expirationDateStyle.dateDanger)
                    instance.model.ExpirationDateCssClass = "date danger";
                if (instance.model.ExpirationDateStyle == $scope.expirationDateStyle.dateAlert)
                    instance.model.ExpirationDateCssClass = "date alert";

                instance.onExpand = function () {

                    if (!instance.isMatchesService) {
                        for (var i = 0; i < instance.model.Services.length; i++) {
                            instance.model.Services[i].inSearchScope = true;
                        }
                    }
                    instance.isExpand = !instance.isExpand;
                    if (instance.isExpand) {
                        $('.table-sticky-filters').trigger('update');
                    }
                }

                instance.closeBuble = function (event) {
                    if (event.target.tagName != 'TD') return;
                    instance.isExpand = false;
                }

                instance.getIsPremium = function() {
                    return this.model.IsPremiumDomain;
                };

                instance.getIsPremiumDNS = function () {
                    var isMatches = false;
                    for (var i = 0; i < instance.model.Services.length; i++) {
                        if (instance.model.Services[i].IsPDNSAvailable)
                        {
                            isMatches = true;
                        }
                    }
                    return isMatches;
                };


                instance.getServicesPropertiesPath = function (propertyName, propertyValue) {
                    var isMatches = false;
                    for (var index = 0; index < instance.model.Services.length; index++) {
                        if (propertyValue == "true")
                            propertyValue = "1"
                        if (instance.model.Services[index][propertyName] == propertyValue) {
                            isMatches = true;
                            instance.model.Services[index].inFilterScope = true;
                        } else {
                            instance.model.Services[index].inFilterScope = false;
                        }
                        instance.model.Services[index].inSearchScope = instance.model.Services[index].inFilterScope;
                    }
                    instance.isFilterMatches = isMatches;
                    instance.isMatchesService = isMatches;
                    instance.isExpand = isMatches;
                    return isMatches;
                }

                instance.getServicesSearchProperties = function (searchValue) {
                    var isMatches = false;
                    for (var i = 0; i < instance.model.Services.length; i++) {
                        instance.model.Services[i].inSearchScope = (instance.model.Services[i].inFilterScope) ? instance.model.Services[i].inFilterScope : false;
                    }
                    if (searchValue != "") {
                        for (var index = 0; index < instance.model.Services.length; index++) {
                            var service = instance.model.Services[index];
                            if (instance.model.Services[index].inFilterScope == true) {
                                if (service.Name && service.Name.toLowerCase().indexOf(searchValue.toLowerCase()) > -1) {
                                    isMatches = true;
                                    service.inSearchScope = true;
                                }
                                if (service.ProductStatusString && service.ProductStatusString.toLowerCase().indexOf(searchValue.toLowerCase()) > -1) {
                                    isMatches = true;
                                    service.inSearchScope = true;
                                }
                                if (service.ProductTypeDescription && service.ProductTypeDescription.toLowerCase().indexOf(searchValue.toLowerCase()) > -1) {
                                    isMatches = true;
                                    service.inSearchScope = true;
                                }
                                if (service.ExpirationDate != null && $filter('date')(service.ExpirationDate, 'MMM d,yyyy').toLowerCase().indexOf(searchValue.toLowerCase()) > -1) {
                                    isMatches = true;
                                    service.inSearchScope = true;
                                }
                            }
                        }
                    }

                    instance.isMatchesService = (!instance.isFilterMatches) ? isMatches : true;
                    instance.isExpand = (!instance.isFilterMatches) ? isMatches : true;
                    return isMatches;
                }

                pageBehavior.categoriesFilter.add(instance.model.CategoryId, instance.model.Category);

                instance.serviceAction = function (serviceAction) {
                    if (serviceAction.DestinationURL && serviceAction.DestinationURL != '') {
                        if (serviceAction.DestinationURL == "#") {
                            $scope.action(serviceAction.InputParams, serviceAction.DisplayText);
                        }
                        else
                            window.open(serviceAction.DestinationURL, "_self");
                    }
                    else {
                        alert('Execute another action');
                    }
                }
                instance.onCreateCategory = function (categoryName, categoryId) {
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                    var defer = $q.defer();
                    httpRepository.domainList.createCategories(instance.model.DomainName, categoryName).then(function (result) {
                        result.sender = "createCategories";
                        result.defer = defer;
                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                    });
                    return defer.promise;
                }
                instance.onChangeCategory = function (categoryName, categoryId) {
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                    var defer = $q.defer();
                    httpRepository.domainList.allotCategories(instance.model.DomainName, categoryName).then(function (result) {
                        result.sender = "allotCategories";
                        result.defer = defer;
                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                    });
                    return defer.promise;
                }
                instance.onRemoveCategory = function (categoryName, categoryId) {
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                    var defer = $q.defer();
                    httpRepository.domainList.removeCategories(instance.model.DomainName, categoryId).then(function (result) {
                        result.sender = "removeCategories";
                        result.defer = defer;
                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                    });
                    return defer.promise;
                }
            },
            onSuccess: function (params) {
                var instance = this.instance;
                if (params.sender == "createCategories") {
                    instance.model.Category = params.Result[1];
                    instance.model.CategoryId = params.Result[2];
                    params.defer.resolve({ Error: false, categoryId: instance.model.CategoryId });
                    $scope.dataCategoryInitValues.push({ id: instance.model.CategoryId, text: instance.model.Category });
                    pageBehavior.categoriesFilter.add(instance.model.CategoryId, instance.model.Category);
                }
                else if (params.sender == "allotCategories") {
                    instance.model.Category = params.Result[1];
                    instance.model.CategoryId = params.Result[2];
                    params.defer.resolve({ Error: false, categoryId: instance.model.CategoryId });
                    pageBehavior.categoriesFilter.add(instance.model.CategoryId, instance.model.Category);
                }
                else if (params.sender == "removeCategories") {
                    instance.model.Category = null;
                    instance.model.CategoryId = null;
                    params.defer.resolve({ Error: false, categoryId: instance.model.CategoryId });
                    pageBehavior.categoriesFilter.remove(params.Result[2]);

                }

                if (params.sender == "createCategories" || params.sender == "allotCategories" || params.sender == "removeCategories") {
                    pageBehavior.pageNgGridSettings.settings.actions.updateDropDownBtns();
                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(params.Msg, {
                        hasClose: true,
                        isAutoHide: true
                    });
                }

                instance.asyncStatus(pageHelper.AsyncStatus.Active);
            },
            onActive: function (params) {
                var instance = this.instance;
            },
            onLoading: function (params) {
                var instance = this.instance;
                if (params.sender == "allotCategories")
                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Allotting Category', false);
                else if (params.sender == "createCategories")
                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Creating New Category', false);
                else if (params.sender == "removeCategories")
                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Removing Category', false);

            },
            onLocked: function (params) {
                var instance = this.instance;
            },
            onError: function (params) {
                var instance = this.instance;
                if (params.sender == "createCategories" || params.sender == "allotCategories" || params.sender == "removeCategories") {
                    params.defer.resolve({ Error: true });
                }
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
        });
    }

    // THIS FUNCTION CAN BE REMOVED IF ALL THE FEATURES ARE IMPLEMENTED
    $scope.FeatureNotEmplemented = function () {
        $scope.pageNotification.stuckNotifications.addSuccess("This feature is not implemented", {
            hasClose: true,
            isAutoHide: true
        });
    }

    
    $scope.autoRenewClick = new pageHelper.AsyncStateBehavior({

        constructor: function () {
            var instance = this.instance;

            instance.domainWhoIsAutoRenew = function (autoRenewFor, domainName, service, editCapabilityType) {
                httpRepository.domainDetails.IsManagerHasRightsToPerformThisAction(domainName, editCapabilityType).then(function (result) {
                    if (result) {
                        //service.IsAutoRenew
                        //service.WGAutoRenew
                        if (service.WGAutoRenew == null || service.WGAutoRenew == undefined || service.WGAutoRenew == isNaN)
                            service.WGAutoRenew = false;
                        if (service.IsAutoRenew == null || service.IsAutoRenew == undefined || service.IsAutoRenew == isNaN)
                            service.IsAutoRenew = false;
                        if (service.PDNSAutoRenew == null || service.PDNSAutoRenew == undefined || service.PDNSAutoRenew == isNaN)
                            service.PDNSAutoRenew = false;

                        var domainAutoRenewFlag = null;
                        var whoisGuardAutoRenewFlag = null;
                        var premiumDNSAutoRenewFlag = null;
                        var promptTitelMsg = null;
                        var promptContentMsg = null;

                        instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                        var showPrompt = function (title, content) {
                            return $modal.open({
                                templateUrl: "/Domains/PromptModalOpen",
                                controller: 'promptRemoveModalCtrl',
                                size: 'lg',
                                resolve: {
                                    modalTitle: function () { return title; },
                                    modalContent: function () { return content; }
                                }
                            });
                        }

                        var switchAutoRenew = function (switchFor, domainAutoRenew, whoisGuardAutoRenew, successCallback, errorCallback) {
                            httpRepository.domainList.domainWhoIsAutoRenew(switchFor, domainName, domainAutoRenew, whoisGuardAutoRenew).then(function (result) {
                                result.sender = "AR_" + switchFor;
                                if (!result.Error)
                                    result.Msg = $scope.DomainInfoRes.success_Alert_Dynamic_AssociatesDomainAutoRenew;
                                else
                                    result.Msg = $scope.DomainInfoRes.error_Alert_Dynamic_AssociatesDomainAutoRenew;
                                instance.asyncStatus((!result.Error) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                                if (result.Error && errorCallback != null)
                                    errorCallback();
                                else if (!result.Error && successCallback != null)
                                    successCallback();
                            });
                        };

                        var switchPDNSAutoRenew = function (PDNSSubID, PDNSAutoRenew, successCallback, errorCallback) {
                            httpRepository.domainList.setPremiumDnsAutoRenew(PDNSSubID, PDNSAutoRenew).then(function (result) {
                                if (!result.Error)
                                    result.Msg = $scope.DomainInfoRes.success_Alert_Dynamic_AssociatesDomainAutoRenew;
                                else
                                    result.Msg = $scope.DomainInfoRes.error_Alert_Dynamic_AssociatesDomainAutoRenew;

                                instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                                if (result.Error && errorCallback != null)
                                    errorCallback();
                                else if (!result.Error && successCallback != null)
                                    successCallback();
                            });
                        };


                        var showValidPrompt = function (promptTitelMsg, promptContentMsg, domainAutoRenewFlag, whoisGuardAutoRenewFlag, premiumDNSAutoRenewFlag) {
                            var activeModalInstance = showPrompt(promptTitelMsg, promptContentMsg);
                            activeModalInstance.result.then(function () {

                                if (domainAutoRenewFlag != null) {
                                    //Domain Auto-Renew
                                    switchAutoRenew(autoRenewFor, service.IsAutoRenew, wgSwitch ? service.IsAutoRenew : service.WGAutoRenew, null, function () {
                                        service.IsAutoRenew = !service.IsAutoRenew;
                                    });
                                }

                                if (whoisGuardAutoRenewFlag != null) {
                                    //WG Auto-Renew
                                    if (service.WGActiveStatus != null && service.WGActiveStatus != undefined) {
                                        switchAutoRenew("WG", service.IsAutoRenew, wgSwitch ? service.IsAutoRenew : service.WGAutoRenew, null, function () {
                                            service.WGAutoRenew = !service.WGAutoRenew;
                                        });
                                    }
                                }

                                if (premiumDNSAutoRenewFlag != null)
                                {
                                    //Premium DNS Auto-Renew
                                    if (service.PDNSSubID != undefined && service.PDNSSubID != null && service.PDNSSubID > 0) {
                                        switchPDNSAutoRenew(service.PDNSSubID, service.PDNSAutoRenew, null, function () {
                                            service.PDNSAutoRenew = !service.PDNSAutoRenew;
                                        });
                                    }
                                }

                            }, function () {
                                if (domainAutoRenewFlag != null && whoisGuardAutoRenewFlag != null && premiumDNSAutoRenewFlag != null && domainAutoRenewFlag && whoisGuardAutoRenewFlag && premiumDNSAutoRenewFlag)
                                {
                                    if (wgSwitch)
                                        service.WGAutoRenew = !service.WGAutoRenew;
                                    if (pdnsSwitch)
                                        service.PDNSAutoRenew = !service.PDNSAutoRenew;
                                    switchAutoRenew(autoRenewFor, service.IsAutoRenew, service.WGAutoRenew, null, function () {
                                        service.IsAutoRenew = !service.IsAutoRenew;
                                    });
                                }
                                else if (domainAutoRenewFlag && whoisGuardAutoRenewFlag && (premiumDNSAutoRenewFlag == null || !premiumDNSAutoRenewFlag))
                                {
                                    service.WGAutoRenew = !service.WGAutoRenew;
                                    switchAutoRenew(autoRenewFor, service.IsAutoRenew, service.WGAutoRenew, null, function () {
                                        service.IsAutoRenew = !service.IsAutoRenew;
                                    });
                                }
                                else if (domainAutoRenewFlag && (whoisGuardAutoRenewFlag == null || !whoisGuardAutoRenewFlag) && premiumDNSAutoRenewFlag)
                                {
                                    service.PDNSAutoRenew = !service.PDNSAutoRenew;
                                    switchAutoRenew(autoRenewFor, service.IsAutoRenew, wgSwitch ? service.IsAutoRenew : service.WGAutoRenew, null, function () {
                                        service.IsAutoRenew = !service.IsAutoRenew;
                                    });
                                }
                                else if (domainAutoRenewFlag != null && whoisGuardAutoRenewFlag != null && premiumDNSAutoRenewFlag != null && !domainAutoRenewFlag && !whoisGuardAutoRenewFlag && !premiumDNSAutoRenewFlag)
                                {                                        
                                    service.IsAutoRenew = !service.IsAutoRenew;
                                    service.WGAutoRenew = !service.WGAutoRenew;
                                    service.PDNSAutoRenew = !service.PDNSAutoRenew;
                                    if (instance.activeNotification != null) {
                                        instance.activeNotification.destroy();
                                    }
                                    //instance.asyncStatus(pageHelper.AsyncStatus.Success, null);
                                }
                                else if (!domainAutoRenewFlag && !whoisGuardAutoRenewFlag && (premiumDNSAutoRenewFlag == null || premiumDNSAutoRenewFlag))
                                {
                                    service.WGAutoRenew = !service.WGAutoRenew;
                                    service.IsAutoRenew = !service.IsAutoRenew;
                                    if (instance.activeNotification != null) {
                                        instance.activeNotification.destroy();
                                    }
                                }
                                else if (!domainAutoRenewFlag && (whoisGuardAutoRenewFlag == null || whoisGuardAutoRenewFlag) && !premiumDNSAutoRenewFlag)
                                {
                                    service.IsAutoRenew = !service.IsAutoRenew;
                                    service.PDNSAutoRenew = !service.PDNSAutoRenew;
                                    if (instance.activeNotification != null) {
                                        instance.activeNotification.destroy();
                                    }
                                }

                            });
                        };

                        if (autoRenewFor == 'DOMAIN') {

                            var wgSwitch = !service.WGAutoRenew  && service.WGActiveStatus != null;
                            var pdnsSwitch = !service.PDNSAutoRenew && service.PDNSSubID != null && service.PDNSSubID > 0;

                            if ((service.WGActiveStatus != null && service.WGActiveStatus != undefined) || (service.PDNSSubID != undefined && service.PDNSSubID != null && service.PDNSSubID > 0)) {

                                if (service.WGActiveStatus != null && service.WGActiveStatus != undefined) {
                                    if (service.IsAutoRenew && wgSwitch)
                                        service.WGAutoRenew = true;
                                    else if (!service.IsAutoRenew)
                                        service.WGAutoRenew = false;
                                }

                                if (service.PDNSSubID != undefined && service.PDNSSubID != null && service.PDNSSubID > 0) {
                                    if (service.IsAutoRenew && pdnsSwitch)
                                        service.PDNSAutoRenew = true;
                                    else if (!service.IsAutoRenew)
                                        service.PDNSAutoRenew = false;
                                }
                                                                
                                if (service.IsAutoRenew && wgSwitch && pdnsSwitch)
                                {
                                    showValidPrompt($scope.DomainInfoRes.prompt_Titel_AutoRenew_TurnOn, $scope.DomainInfoRes.prompt_Content_AutoRenew_PM1, true, true, true);
                                }
                                else if (service.IsAutoRenew && wgSwitch && !pdnsSwitch && (service.PDNSSubID == undefined || service.IsPDNSActiveStatus != undefined)) {

                                    var param = service.IsPDNSActiveStatus;
                                    if (!pdnsSwitch && (service.PDNSSubID == undefined || !service.IsPDNSActiveStatus))
                                        param = null;

                                    showValidPrompt($scope.DomainInfoRes.prompt_Titel_AutoRenew_TurnOn, $scope.DomainInfoRes.prompt_Content_AutoRenew_PM2, true, true, param);
                                }
                                else if (service.IsAutoRenew && pdnsSwitch && !wgSwitch) {

                                    var param = service.WGActiveStatus;
                                    if (!wgSwitch && (service.WGActiveStatus == undefined || !service.WGActiveStatus))
                                        param = null;
                                    showValidPrompt($scope.DomainInfoRes.prompt_Titel_AutoRenew_TurnOn, $scope.DomainInfoRes.prompt_Content_AutoRenew_PM3, true, param, true);
                                }
                                else if (!service.IsAutoRenew && !wgSwitch && service.WGActiveStatus != undefined && !pdnsSwitch && service.PDNSSubID != undefined) {

                                    showValidPrompt($scope.DomainInfoRes.prompt_Titel_AutoRenew_TurnOff, $scope.DomainInfoRes.prompt_Content_AutoRenew_PM4, false, false, false);
                                }
                                else if (!service.IsAutoRenew && !wgSwitch && service.WGActiveStatus != undefined && (pdnsSwitch || service.PDNSSubID == undefined)) {

                                    var param = true;
                                    if (pdnsSwitch || service.PDNSSubID == undefined || !service.IsPDNSActiveStatus)
                                        param = null;
                                    showValidPrompt($scope.DomainInfoRes.prompt_Titel_AutoRenew_TurnOff, $scope.DomainInfoRes.prompt_Content_AutoRenew_PM5, false, false, param);
                                }
                                else if (!service.IsAutoRenew && (wgSwitch || service.WGActiveStatus == undefined) && !pdnsSwitch && service.PDNSSubID != undefined) {

                                    var param = true;
                                    if (wgSwitch || service.WGActiveStatus == undefined || !service.WGActiveStatus)
                                        param = null;
                                    showValidPrompt($scope.DomainInfoRes.prompt_Titel_AutoRenew_TurnOff, $scope.DomainInfoRes.prompt_Content_AutoRenew_PM6, false, param, false);
                                }
                                else if (!service.IsAutoRenew && wgSwitch && pdnsSwitch) {
                                    switchAutoRenew(autoRenewFor, service.IsAutoRenew, wgSwitch ? service.IsAutoRenew : service.WGAutoRenew, null, function () {
                                        service.IsAutoRenew = !service.IsAutoRenew;
                                    });
                                }
                                else {
                                    switchAutoRenew(autoRenewFor, service.IsAutoRenew, wgSwitch ? service.IsAutoRenew : service.WGAutoRenew, null, function () {
                                        service.IsAutoRenew = !service.IsAutoRenew;
                                    });
                                }
                            }
                            else {
                                switchAutoRenew(autoRenewFor, service.IsAutoRenew, wgSwitch ? service.IsAutoRenew : service.WGAutoRenew, null, function () {
                                    service.IsAutoRenew = !service.IsAutoRenew;
                                });
                            }
                        }
                        else if (autoRenewFor == 'WG') {
                            if (!service.IsAutoRenew && service.WGAutoRenew)
                            {
                                var activeModalInstance = showPrompt($scope.DomainInfoRes.prompt_Titel_AutoRenew_WGTurnOn, $scope.DomainInfoRes.prompt_Content_AutoRenew_PM7);
                                activeModalInstance.result.then(function () {
                                    //Domain Auto-Renew
                                    service.IsAutoRenew = true;
                                    switchAutoRenew(autoRenewFor, service.IsAutoRenew, wgSwitch ? service.IsAutoRenew : service.WGAutoRenew, null, function () {
                                        service.IsAutoRenew = !service.IsAutoRenew;
                                    });

                                    //WG Auto-Renew
                                    if (service.WGActiveStatus != null && service.WGActiveStatus != undefined) {
                                        switchAutoRenew(autoRenewFor, service.IsAutoRenew, wgSwitch ? service.IsAutoRenew : service.WGAutoRenew, null, function () {
                                            service.WGAutoRenew = !service.WGAutoRenew;
                                        });
                                    }
                                }, function () {
                                    service.WGAutoRenew = !service.WGAutoRenew;
                                    if (instance.activeNotification != null) {
                                        instance.activeNotification.destroy();
                                    }
                                });
                            }
                            else
                            {
                                switchAutoRenew(autoRenewFor, service.IsAutoRenew, wgSwitch ? service.IsAutoRenew : service.WGAutoRenew, null, function () {
                                    service.IsAutoRenew = !service.IsAutoRenew;
                                });
                            }
                        }
                    }
                    else {
                        if (autoRenewFor == 'DOMAIN') {
                            service.IsAutoRenew = !service.IsAutoRenew;
                        }
                        else {
                            service.WGAutoRenew = !service.WGAutoRenew;
                        }
                        $scope.pageNotification.stuckNotifications.addError('User has no rights to perform this action', {
                            hasClose: true,
                            isAutoHide: true
                        });
                    }




                });
            }

            instance.domainPremiumDNSAutoRenew = function (PDNSsubscriptionsId, service) {
                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                //$scope.model.PremiumDnsDetails.IsAutoRenewEnabled = !$scope.model.PremiumDnsDetails.IsAutoRenewEnabled;
                //service.PDNSAutoRenew = !service.PDNSAutoRenew;

                var showPrompt = function (title, content) {
                    return $modal.open({
                        templateUrl: "/Domains/PromptModalOpen",
                        controller: 'promptRemoveModalCtrl',
                        size: 'lg',
                        resolve: {
                            modalTitle: function () { return title; },
                            modalContent: function () { return content; }
                        }
                    });
                }

                if (!service.IsAutoRenew && service.PDNSAutoRenew) {
                    var activeModalInstance = showPrompt($scope.DomainInfoRes.prompt_Titel_AutoRenew_PDNSTurnOn, $scope.DomainInfoRes.prompt_Content_AutoRenew_PM8);
                    activeModalInstance.result.then(function () {
                        //Domain Auto-Renew
                        if (service.WGAutoRenew == undefined)
                            service.WGAutoRenew = false;
                        service.IsAutoRenew = true;
                        httpRepository.domainList.domainWhoIsAutoRenew("DOMAIN", service.Name, service.IsAutoRenew, service.WGAutoRenew).then(function (result) {
                            if (result.Error)
                                service.IsAutoRenew = false;
                            //instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                        });

                        httpRepository.domainList.setPremiumDnsAutoRenew(PDNSsubscriptionsId, service.PDNSAutoRenew).then(function (result) {
                            if (!result.Error)
                                result.Msg = $scope.DomainInfoRes.success_Alert_Dynamic_AssociatesDomainAutoRenew;
                            else
                            {
                                result.Msg = $scope.DomainInfoRes.error_Alert_Dynamic_AssociatesDomainAutoRenew;
                                service.PDNSAutoRenew = !service.PDNSAutoRenew;
                            }
                                
                            instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                        });
                    }, function () {
                        service.PDNSAutoRenew = !service.PDNSAutoRenew;
                        if (instance.activeNotification != null) {
                            instance.activeNotification.destroy();
                        }
                    });
                }
                else {
                    httpRepository.domainList.setPremiumDnsAutoRenew(PDNSsubscriptionsId, service.PDNSAutoRenew).then(function (result) {
                        if (!result.Error)
                            result.Msg = $scope.DomainInfoRes.success_Alert_Dynamic_AssociatesDomainAutoRenew;
                        else
                            result.Msg = $scope.DomainInfoRes.error_Alert_Dynamic_AssociatesDomainAutoRenew;
                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                    });
                }
            }
            instance.serviceAutoRenew = function (service, editCapabilityType, domainName) {
                if (service != null && service.ProductTypeString == "HOSTING") {
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                    httpRepository.domainList.hostingIsAutoRenew(service.ProductId, service.IsAutoRenew).then(function (result) {
                        if (result.Error) {
                            service.IsAutoRenew = !service.IsAutoRenew;
                        }
                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                    });
                }
                else {

                    httpRepository.domainDetails.IsManagerHasRightsToPerformThisAction(domainName, editCapabilityType).then(function (result) {
                        if (result) {
                            instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                            if (service != null && service.ProductTypeString == "PRIVATEEMAIL") {
                                httpRepository.privateEmail.changeAutoRenew(service.ProductId, service.IsAutoRenew).then(function (result) {
                                    if (result.Error) {
                                        service.IsAutoRenew = !service.IsAutoRenew;
                                    }
                                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                                });
                            }

                        }
                        else {
                            service.IsAutoRenew = !service.IsAutoRenew;
                            $scope.pageNotification.stuckNotifications.addError('User has no rights to perform this action', {
                                hasClose: true,
                                isAutoHide: true
                            });
                        }
                    });

                }
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });

        },
        onActive: function (params) {
            var instance = this.instance;
            var result = params;
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Loading...', false);
        },
        onLocked: function (params) {
            var instance = this.instance;
            var result = params;
        },
        onError: function (params) {
            $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });

    $scope.RemoveAutoRenew = function (actions) {
        for (actionindex = 0; actionindex < actions.length; actionindex++) {
            if (actions[actionindex].DisplayText == 'Auto-Renew')
                actions.splice(actionindex, 1);
        }
    }

    $scope.AuthorizeTransferInModal = function (domainName, transferId) {
        domainTransferInService.showAuthorizeTransferModal(domainName, transferId).then(function (modalResult) {
            $scope.pageBehavior.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(DomainTransferRes.message_AutorizeTransfer_Success, {
                hasClose: true,
                isAutoHide: true
            });
            //instance.asyncStatus(pageHelper.AsyncStatus.Success, { sender: "authorizeTransfer", Result: modalResult });
        });
    }
    $scope.TransferInRefreshStatus = function (domainName, modelIndexPosition) {
        httpRepository.domainList.getTransferDetails(domainName, modelIndexPosition).then(function (result) {
            if (result.Error) {
                $scope.pageBehavior.activeNotification = $scope.pageNotification.stuckNotifications.addError(result.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
            else {

                if (result != null && result.Result != null)
                {
                    $scope.pageBehavior.pageNgGridSettings.parameters.storage.requestData[modelIndexPosition].model.ContextualMessage = result.Result.Data[0].ContextualMessage;
                    $scope.pageBehavior.pageNgGridSettings.parameters.storage.requestData[modelIndexPosition].model.Actions = result.Result.Data[0].Actions;
                    $scope.pageBehavior.pageNgGridSettings.parameters.storage.requestData[modelIndexPosition].model.Services[0].Actions = result.Result.Data[0].Services[0].Actions;
                    $scope.pageBehavior.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess("Transfer In status refreshed", {
                        hasClose: true,
                        isAutoHide: true
                    });

                }
                
               
            }

        });
    }

    $scope.TransferInResendEmail = function (transferId) {
        httpRepository.domainTransfer.resendEmail(transferId).then(function (result) {
            if (result.Error) {
                $scope.pageBehavior.activeNotification = $scope.pageNotification.stuckNotifications.addError(result.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
            else {
                $scope.pageBehavior.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(DomainTransferRes.message_ResendEmail_Success, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
        });
    }

    $scope.action = function (parameters, actionname) {

        if (parameters == undefined && actionname == undefined) {
            return;
        }
        
        if ((actionname.toUpperCase() == 'RENEW' || actionname.toUpperCase() == 'BUY NEW' || actionname.toUpperCase() == 'LEARN MORE')
            && parameters.Actions[0].DestinationURL == '#')
        {
            $scope.symantecCertDetails = {
                certificateId: parameters.ProductId,
                certificateType: parameters.Name,
                validYears : parameters.ValidYears,
                sansQty : parameters.sansQty
            }
            if (actionname.toUpperCase() == 'LEARN MORE') {
                actionname = 'activate';
            }
            popupWindow.openPopupWindow($scope.symantecCertDetails, actionname.toLowerCase(), SymantecSunsetDateWithFormat, SiteServerNameUrl);
            return;
        }

        var splitParams;
        if (actionname.toUpperCase() == 'AUTHORIZE TRANSFER') {
            splitParams = parameters.split(",")
            $scope.AuthorizeTransferInModal(splitParams[0], splitParams[1])
        }
        else if (actionname.toUpperCase() == 'RESEND EMAIL') {
            $scope.TransferInResendEmail(parameters)
        }
        else if (actionname.toUpperCase() == 'REFRESH STATUS') {
            splitParams = parameters.split(",")
            $scope.TransferInRefreshStatus(splitParams[0], splitParams[1])
        }
        else if (actionname.toUpperCase() == 'VERIFY CONTACTS') {
            $scope.VerifyContacts.onClick(parameters);
        }
        else if (actionname.toUpperCase() == 'REDIRECT DOMAIN') {
            splitParams = parameters.split(",")
            httpRepository.domainDetails.IsManagerHasRightsToPerformThisAction(splitParams[0], splitParams[1]).then(function (result) {
                if (result) {
                    new pageHelper.AsyncStateBehavior({
                        constructor: function () {
                            var instance = this.instance;
                            instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                            httpRepository.domainDetails.getUrlForwardingInfo(splitParams[0]).then(function (result) {
                                instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                                var urlForwardingInfoModel = JSON.parse(result.Result);
                                if (!result.Error && urlForwardingInfoModel != null) {
                                    if (urlForwardingInfoModel.IsShowManageButton) {
                                        var locationUrl = '/Domains/dns/managehostrecords/' + splitParams[0] + '/domainlist';
                                        window.location.href = locationUrl;
                                    }
                                    else if (urlForwardingInfoModel.IsShowSetupButton) {
                                        $scope.AddRecords(splitParams[0], 'addRedirect', 0, 'URL', urlForwardingInfoModel);
                                    }
                                    else if (urlForwardingInfoModel.IsShowEditButton) {
                                        $scope.AddRecords(splitParams[0], 'editRedirect', urlForwardingInfoModel.HostId, 'URL', urlForwardingInfoModel);
                                    }

                                }
                            });
                        },
                        onSuccess: function (params) {
                            var instance = this.instance;
                            var result = params;
                        },
                        onActive: function (params) {
                            var instance = this.instance;
                            var result = params;
                        },
                        onLoading: function (params) {
                            var instance = this.instance;
                            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Loading...', false);
                        },
                        onLocked: function (params) {
                            var instance = this.instance;
                            var result = params;
                        },
                        onError: function (params) {
                            $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                                hasClose: true,
                                isAutoHide: true
                            });
                        }
                    });
                }
                else {
                    $scope.pageNotification.stuckNotifications.addError("'User has no rights to perform this action", {
                        hasClose: true,
                        isAutoHide: true
                    });
                }
            });

        }
        else if (actionname.toUpperCase() == 'REDIRECT EMAIL') {

            splitParams = parameters.split(",")
            httpRepository.domainDetails.IsManagerHasRightsToPerformThisAction(splitParams[0], splitParams[1]).then(function (result) {
                if (result) {
                    new pageHelper.AsyncStateBehavior({
                        constructor: function () {
                            var instance = this.instance;
                            instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                            httpRepository.domainDetails.getEmailForwardingInfo(splitParams[0]).then(function (result) {
                                instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                                var emailForwardingInfoModel = result.Result;
                                if (!result.Error && emailForwardingInfoModel != null) {
                                    $scope.openResolveConflictRedirectEmailModalPopUp(splitParams[0], JSON.parse(emailForwardingInfoModel));
                                }
                            });
                        },
                        onSuccess: function (params) {
                            var instance = this.instance;
                            instance.asyncStatus(pageHelper.AsyncStatus.Active);
                            var result = params;
                        },
                        onActive: function (params) {
                            var instance = this.instance;
                            var result = params;
                        },
                        onLoading: function (params) {
                            var instance = this.instance;
                            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Loading...', false);
                        },
                        onLocked: function (params) {
                            var instance = this.instance;
                            var result = params;
                        },
                        onError: function (params) {
                            $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                                hasClose: true,
                                isAutoHide: true
                            });
                        }
                    });
                }
                else {
                    $scope.pageNotification.stuckNotifications.addError("'User has no rights to perform this action", {
                        hasClose: true,
                        isAutoHide: true
                    });
                }
            });

        }
        else if (actionname.toUpperCase() == 'AUTHORIZE FREEDNS') {
            $scope.openAuthorizeFreeDNSModalPopUp.onClick(parameters);
        }
        else if (actionname.toUpperCase() == 'REMOVE') {
            splitParams = parameters.split(",")
            $scope.RemoveSSlCertificateConfirmation(splitParams[0], splitParams[1])
        }
    }
    // Open Resolve Conflict Redirect Email Modal PopUp
    $scope.IsEmailRedirectModalOpened = false;
    $scope.openResolveConflictRedirectEmailModalPopUp = function (domainName, emailForwardingInfoModel) {

        if (!emailForwardingInfoModel.IsUsingPrivateEmail
		&& !emailForwardingInfoModel.IsUsingNamecheapHosting
		&& emailForwardingInfoModel.DnsType != 'Custom'
		&& (emailForwardingInfoModel.EmailType == 'NONE' || emailForwardingInfoModel.EmailType == 'FWD')) {
            // When domain is using default dns and it has Email Type as NONE or FWD.
            if (emailForwardingInfoModel.EmailType == 'NONE' || emailForwardingInfoModel.EmailType == 'FWD') {

                $scope.RedirectToManagePage(domainName, emailForwardingInfoModel.EmailType);
            }
        }
        else {
            if (!$scope.IsEmailRedirectModalOpened) {
                var modalInstance = $modal.open({
                    templateUrl: "/Domains/DomainDetails/ResolveConflictRedirectEmailModal",
                    controller: 'domainResolveConflictRedirectEmailCtrl',
                    size: 'lg',
                    backdrop: 'static',
                    resolve: {
                        RedirectEmailViewModel: function () {
                            return emailForwardingInfoModel;
                        },
                        DomainName: function () {
                            return domainName;
                        },
                        PageFrom: function () {
                            return 'domainlist';
                        }
                    }
                });
                modalInstance.result.then(function (param) {
                    $scope.IsEmailRedirectModalOpened = false;
                    if (param != null && param != '') {
                        var instance = this.instance;
                        $scope.pageNotification.stuckNotifications.addError(param, {
                            hasClose: true,
                            isAutoHide: true
                        });
                    }
                });
                modalInstance.opened.then(function () {
                    $scope.IsEmailRedirectModalOpened = true;
                });
            }

        }
    }

    $scope.RedirectToManagePage = function (domainName, emailType) {
        var redirectLocationUrl = '/Domains/RedirectEmailList/' + domainName + '/domainlist';

        if (emailType == 'NONE') {
            // Internally update email type and then redirect to manage page
            httpRepository.domainDetails.resolveConflictSetEmailType(domainName, emailType).then(function (result) {
                if (result.Error == false) {
                    window.location.href = redirectLocationUrl;
                };
            });
        }
        else if (emailType == 'FWD') {
            // Redirect to manage page
            window.location.href = redirectLocationUrl;
        }
    }

    // End Resolve Conflict Redirect Email Modal PopUp
    //Add and Edit Host Records model window for Advanced Dns
    $scope.IsDomainRedirectOpen = false;
    $scope.AddRecords = function (domainName, pageType, hostID, recordType, pageModelClass) {
        var openModelParameter = pageType;
        var pageModelClass = pageModelClass;
        httpRepository.domainDetails.IsManagerHasRightsToPerformThisAction(domainName, "hosts").then(function (result) {
            if (!$scope.IsDomainRedirectOpen) {
                var modalInstance = $modal.open({
                    templateUrl: "/Domains/Dns/AdvancedDNSAddRecordsModel/",
                    controller: 'addDnsRecords',
                    size: 'lg',
                    backdrop: 'static',
                    resolve: {
                        openModelParameter: function () {
                            if (pageType != null) {
                                return $scope.pageTypeParam = pageType;
                            }
                            else {
                                return $scope.pageTypeParam = 'addNew';
                            }
                        },
                        domainName: function () {
                            return domainName;
                        },
                        hostingID: function () {
                            if (hostID != null) {
                                return $scope.hostRecordID = hostID;
                            }
                            else { return $scope.hostRecordID = 0; }

                        },
                        hostRecordType: function () {
                            if (hostID != null) {
                                return $scope.editHostRecordType = recordType;
                            }
                            else { return $scope.editHostRecordType = ''; }
                        },
                        pageModelClass: function () {
                            if (pageModelClass != '' && pageModelClass != null) {
                                return pageModelClass;
                            }
                            else {
                                return pageModelClass = 0;
                            }
                        },
                        domainType: function () {
                            return $scope.isSubDomain;
                        }
                    }
                });

                modalInstance.result.then(function (model) {
                    $scope.IsDomainRedirectOpen = false;
                    if (model != null) {
                        if (openModelParameter == 'AddDDNS' || openModelParameter == "EditDDNS") {
                            new pageHelper.AsyncStateBehavior(
     {
         constructor: function () {
             var instance = this.instance;
             instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Please wait.', true);
             httpRepository.domainDns.getDynamicRecords(domainName, $scope.isSubDomain, true).then(function (result) {

                 if (!result.Error) {

                     $scope.ddnsHostRecords = result.Result.HostInfo;
                     instance.asyncStatus(pageHelper.AsyncStatus.Success, result);
                     // var instance = this.instance;

                 }

                 else {
                     // var instance = this.instance;

                     $('div.site-msg.has-close.error.alert').show();
                     $scope.errormessage = result.Msg;
                     instance.asyncStatus(pageHelper.AsyncStatus.Error, result);

                 }

             });
         },
         onSuccess: function () {
             $scope.pageNotification.alerts.clear();
         },
         onError: function () {
             $scope.pageNotification.alerts.clear();
         }
     });
                        }
                        else if (openModelParameter == 'addNew') {
                            //$scope.loadHostRecords();
                            $scope.LoadAdvancedDNSView();
                        }
                        else if (openModelParameter == 'edit') {
                            //$scope.loadHostRecords();                    
                            window.location.href = "/domains/dns/managehostrecords/" + domainName + "/" + $scope.pageFrom;
                        }
                        else if (openModelParameter == 'manageAddNew') {

                            window.location.href = "/domains/dns/managehostrecords/" + domainName + "/" + $scope.pageFrom;
                        }
                        else if (openModelParameter == 'addRedirect' || openModelParameter == 'editRedirect') {
                            if (model.isResultSuccess && !model.isCancel) {
                                $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInfoRes.success_Site_RedirectDomain, {
                                    hasClose: true,
                                    isAutoHide: true
                                });
                            }
                            else if (!model.isResultSuccess && !model.isCancel) {
                                $scope.pageNotification.stuckNotifications.addError($scope.DomainInfoRes.error_Site_RedirectDomain, {
                                    hasClose: true,
                                    isAutoHide: true
                                });

                            }
                        }
                    }
                });

                modalInstance.opened.then(function () {
                    $scope.IsDomainRedirectOpen = true;
                });
            }

        });

    }


    $scope.VerifyContacts = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.onClick = function (domainName) {
                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                httpRepository.domainDetails.resendNotificationEmail(domainName).then(function (result) {
                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                });
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            if (params != undefined && params != null && params != '') {
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInfoRes.success_Alert_RegistrantResendNotification, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
        },
        onActive: function () {

        },
        onError: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError($scope.DomainInfoRes.failure_Alert_RegistrantResendNotification, {
                hasClose: true,
                isAutoHide: true
            });
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading($scope.DomainInfoRes.static_Loading_RegistrantResendNotification, true);
            //instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Loading...', false);
        }




    })
    $scope.IsAuthorizeFreeDNSModalPopUpOpened = false;
    $scope.openAuthorizeFreeDNSModalPopUp = new pageHelper.AsyncStateBehavior({
        constructor: function () {

            var instance = this.instance;
            var listOfEmails = [];
            instance.onClick = function (param) {
                $scope.GetFreeDnsAuthorizationEmailList = new pageHelper.AsyncStateBehavior({
                    constructor: function () {
                        var instance = this.instance;
                        httpRepository.domainListAction.getFreeDnsAuthorizationEmailList(param).then(function (result) {
                            instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                        });
                    },
                    onSuccess: function (emailList) {
                        if (!$scope.IsAuthorizeFreeDNSModalPopUpOpened) {
                            var instance = this.instance;
                            var verifyContactModalInstance = $modal.open({
                                templateUrl: "/Domains/AuthorizeFreeDNS",
                                controller: 'authorizeDNSCtrl',
                                size: 'lg',
                                backdrop: 'static',
                                keyboard: false,
                                resolve: {
                                    EmailList: function () {
                                        return emailList.Result;
                                    },
                                    Domain: function () {
                                        return param;
                                    }
                                }
                            });
                            verifyContactModalInstance.result.then(function (result) {
                                $scope.IsAuthorizeFreeDNSModalPopUpOpened = false;
                                var instance = this.instance;
                                if (result != undefined && result.Msg != null && result.Msg != undefined && result.Msg != '') {
                                    if (result.Msg == "Success") {
                                        instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainInfoRes.success_Site_FreeDnsAuthEmailSavedSuccessMessage, {
                                            hasClose: true,
                                            isAutoHide: true
                                        });
                                    }
                                    else if (result.Msg == "Error") {
                                        instance.activeNotification = $scope.pageNotification.stuckNotifications.addError($scope.DomainInfoRes.error_Site_FreeDnsAuthEmailSavedErrorMessage, {
                                            hasClose: true,
                                            isAutoHide: true
                                        });
                                    }
                                }
                            });
                            verifyContactModalInstance.opened.then(function () {
                                $scope.IsAuthorizeFreeDNSModalPopUpOpened = true;
                            });
                        }
                    },
                    onError: function (emailList) {
                        var instance = this.instance;
                        //instance.asyncStatus(pageHelper.AsyncStatus.Active);
                        instance.activeNotification = $scope.pageNotification.stuckNotifications.addError($scope.DomainInfoRes.error_Site_FreeDnsAuthEmailRetrieveFailed, {
                            hasClose: true,
                            isAutoHide: true
                        });
                    }
                });
            }
        }
    });

    $scope.RemoveSSlCertificateConfirmation = function (certificateId, certificateName) { // var instance = this.instance;

        var activeModalInstance = $modal.open({
            templateUrl: "/Common/PromptRemove",
            controller: 'promptRemoveModalCtrl',
            size: 'lg',
            resolve: {
                modalTitle: function () {

                    return $scope.SSLInfoRes.static_RemoveHeading.replace('{0}', certificateName) //"Remove Certificate ID";

                },
                modalContent: function () {

                    return 'Once an SSL certificate has been removed, it cannot be accessed again. Are you sure you want to remove this SSL certificate?' //"Removing certificates";
                }
            }
        });
        activeModalInstance.result.then(function (msg) {
            if (msg == 'yes') {

                location.href = "/domains/ssl/remove/" + certificateId + "/" + certificateId + "/DOMAINLIST";
            }
            //when user click 
        }
        , function () {
            // any result
            activeModalInstance = null;
        });



    }
    $scope.OnViewChange = function (optionValue) {
        if (optionValue.toUpperCase() == 'DOMAINSONLY') {

            window.location.href = "/domains/ChangeProductViewOption/" + optionValue;
        }
    }
}]);;
app.controller('domainSetEmailRefreshDurationModal', [
    '$scope', '$modalInstance', 'httpRepository', 'pageHelper', '$timeout', 'notificationService', '$filter', '$document', 'slotId', 'duration', 'domainName',
    function ($scope, $modalInstance, httpRepository, pageHelper, $timeout, notificationService, $filter, $document, slotId, duration, domainName) {
        //if ($('#opacDiv').length) {
        //    $('#opacDiv').removeClass('disabled-content async-processing');
        //}
        $scope.selectedduration = duration;
        if ($scope.selectedduration == 0) {
            $scope.selectedduration = 3;
        }
        $scope.cancelClick = function () {
            $modalInstance.close('');
        };
        $scope.SaveChangesToSetEmailRefreshDuration = new pageHelper.AsyncStateBehavior({
               constructor: function () {
                   var instance = this.instance;
                   instance.onClick = function () {
                       $('.opac').delay(25).queue(function () {
                           $(this).addClass('page-load').css({ 'text-align': 'left', 'padding': '0em', 'opacity': '0.5', 'background-position': 'center 2.5em' });
                       });
                       httpRepository.domainDetails.setEmailRefreshDuration(domainName,slotId, $scope.selectedduration).then(function (result) {
                           instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                       });
                   }
               },
               onSuccess: function (params) {
                   var instance = this.instance;
                   instance.asyncStatus(pageHelper.AsyncStatus.Active);

                   if (params.Result == 'NORIGHTS') {
                       $modalInstance.close(params.Result);

                   } else {
                       $modalInstance.close($scope.selectedduration);
                   }
               },
               onActive: function () {

               }

           })
    }
]);;
app.controller('emailForwardingBulkActionCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'ncWizardService',
function ($scope, $rootScope, httpRepository, $filter, $modal, notificationService, pageHelper, $q, ncGridParams, $sce, ncWizardService) {

    $scope.pageHelper = pageHelper;
    $scope.step1Notification = new notificationService.instance();
    $scope.pageNotification = new notificationService.instance();
    $scope.domainEmailRedirectnotificationAlertArguments = { hasClose: true, isAutoHide: true };
    $scope.DomainsInfo = DomainInfoRes;

    //Scope Variables
    $scope.SelectedDomainNames = '';
    $scope.SelectedmailBoxNames = '';
    $scope.SelectedmailBoxIds = '';
    $scope.UsedForwarders = 0;
    $scope.AvailableForwarders = 50;
    $scope.CatchAllFlag = false;   
    $scope.Used = 0;
    $scope.Total = 0;
    $scope.HideHorizontalLine = false;
    $scope.ShowCatchAllButton = true;
    $scope.ShowActionButtons = true;
    $scope.showDoneButton = false;

    this.initialize = function (model) {
        $scope.Model = model.Model;
        $scope.Messages = model.Messages;
        $scope.SelectedDomainList = [];
    }

    $scope.CancelBulkAction = $rootScope.closeLightbox = function () {
        httpRepository.domainList.goToDomainList();
    }

    $scope.pageAction = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            var loadingMessage = '';
            instance.EmailForwardingConformation1 = false;
            instance.EmailForwardingConformation2 = false;

            instance.model = null;
            instance.pageNgGridSettings = new ncGridParams();
            instance.pageNgGridSettings.parameters.search.serchPropertyNames = ['MailboxName', 'ForwardTo'];
            instance.pageNgGridSettings.settings.getData = function ($defer, ncGridState) {
                instance.filterStatusPropertyNames = [];
                instance.filterFlagsPropertyNames = [];
            }
            instance.pageNgGridSettings.settings.reload();
            instance.Step1Action = function () {
                $scope.step1Notification.alerts.clear();
                $scope.SelectedDomainList = [];
                // Assigning checked domains to the list
                $('input:checkbox[name=selecteddomains]:checked').each(function () {
                    var domainListItem = {};
                    domainListItem.DomainName = $(this).attr('id');
                    $scope.SelectedDomainList.push(domainListItem)
                });
                if (instance.EmailForwardingConformation1 == false) {
                    $scope.step1Notification.alerts.addError($scope.Messages.EmailForwardingConformation, {
                        hasClose: true,
                        isAutoHide: true
                    });
                    $('html, body').animate({ scrollTop: $('div[link="step1Notification"]').offset().top - 20 }, 200);
                    return false;
                }
                if ($scope.SelectedDomainList.length > 0) {
                    instance.asyncStatus(pageHelper.AsyncStatus.Active);
                    ncWizardService.moveNext();
                    $scope.pageNotification.stuckNotifications.clear();
                }
                else if ($scope.SelectedDomainList.length == 0) {
                    $scope.step1Notification.alerts.addError($scope.Messages.SelectAtleastOneDomainToProceed, {
                        hasClose: true,
                        isAutoHide: true
                    });
                    $('html, body').animate({ scrollTop: $('div[link="step1Notification"]').offset().top - 20 }, 200);
                }
                else {
                    $scope.step1Notification.alerts.addError($scope.Messages.CannotProceedToSetp2, {
                        hasClose: true,
                        isAutoHide: true
                    });
                    $('html, body').animate({ scrollTop: $('div[link="step1Notification"]').offset().top - 20 }, 200);
                }

            }
            instance.Step2Action = function () {
                var EmailForwarders = {};
                var Forwarders = [];

                $scope.pageNotification.stuckNotifications.clear();                
                $scope.pageNotification.stuckNotifications.addLoading("Processing", {
                    hasClose: true,
                    isAutoHide: true
                });
                var forwarderModel = $scope.pageAction.pageNgGridSettings.parameters.storage.requestData;
                //Get Selected Domains Names List
                var selectedDomains = '';
                for (var count = 0; count < $scope.SelectedDomainList.length; count++) {
                    selectedDomains += $scope.SelectedDomainList[count].DomainName + ',';
                }
                //Get Fowarders List
                var mailboxNames = '';
                var forwardToList = '';
                for (var count = 0; count < forwarderModel.length; count++) {
                    mailboxNames += forwarderModel[count].MailboxName + ',';
                    forwardToList += forwarderModel[count].ForwardTo + ',';
                }
                if (selectedDomains != '' && mailboxNames != '' && forwardToList != '' && forwarderModel.length <= 50)
                {
                    httpRepository.emailRedirect.saveBulkEmailForwarders(selectedDomains, mailboxNames, forwardToList, instance.EmailForwardingConformation2).then(function (result)
                    {
                        if (result != null && result.Result != null && result.Result) {
                            $scope.pageNotification.alerts.clear();
                            $scope.pageNotification.stuckNotifications.clear();
                            $scope.CancelBulkAction();
                        }
                        else {
                            $scope.pageNotification.alerts.clear();
                            $scope.pageNotification.stuckNotifications.clear();
                            $scope.pageNotification.stuckNotifications.addError(result.Msg, { hasClose: true, isAutoHide: true });
                        }
                    });
                }
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            if (params.sender == 'getModel') {
                instance.showContent = true;
                instance.model = params.Result;
            }
            $scope.pageNotification.alerts.clear();
            $scope.pageNotification.stuckNotifications.clear();
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(params.Message, {
                hasClose: true,
                isAutoHide: true
            });
        },
        onActive: function (params) {
            var instance = this.instance;
            $scope.pageNotification.alerts.clear();
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onLoading: function (params) {
            var instance = this.instance;
            $scope.pageNotification.alerts.clear();
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Please wait.', false);
            instance.isDisabled = true;
            instance.showError = false;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onWarning: function (params) {
            var instance = this.instance;
            $scope.pageNotification.alerts.clear();
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addWarning('<B>' + params + '</B>', {
                hasClose: true,
                isAutoHide: true
            });
            instance.isDisabled = false;
            instance.showError = false;
        },
        onError: function (params) {
            var instance = this.instance;
            $scope.pageNotification.alerts.clear();
            $scope.pageNotification.stuckNotifications.clear();
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Message, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });
    $scope.IsForwarderModalOpened = false;
    $scope.openForwarderModal = function (action, mailBoxName, destinationEmail, id, index) {
        if (!$scope.IsForwarderModalOpened)
        {
            var modalInstance = $modal.open({
                templateUrl: "/Domains/BulkForwarderModalPopup",
                controller: 'domainBulkEmailRedirectActionCtrl',
                size: 'lg',
                backdrop: 'static',
                resolve: {
                    domainName: function () {
                        return "example.com";
                    },
                    mailBoxName: function () {
                        return mailBoxName;
                    },
                    mailBoxId: function () {
                        return id;
                    },
                    forwardTo: function () {
                        return destinationEmail;
                    },
                    action: function () {
                        return action;
                    },
                    title: function () {
                        var modaltitle = '';
                        if (action == 'add') {
                            title = $scope.DomainsInfo.static_Modal_Title_AddForwarder;
                        }
                        else if (action == 'edit') {
                            title = $scope.DomainsInfo.static_Modal_Title_EditForwarder;

                        }
                        return title;
                    },
                    index: function () {
                        return index;
                    }
                }
            });
            modalInstance.result.then(function (model) {
                $scope.IsForwarderModalOpened = false;
                var instance = this.instance;

                if (model != null && model != undefined && model != '') {
                    if (model.Call == 'Success') {
                        var message = '';

                        var nsModel = $scope.pageAction.pageNgGridSettings.parameters.storage.requestData;

                        if (action == 'add') {
                            var item = nsModel.filter(function (obj) { return (obj.MailboxName.replace(/ /g, '') == model.mailBoxName.replace(/ /g, '') && obj.ForwardTo.replace(/ /g, '') == model.forwardTo.replace(/ /g, '')) })
                            if (item.length == 0) {
                                $scope.AddItemInGrid(model);
                                message = $scope.DomainsInfo.success_Contextual_AddForwarder.replace('{Forwarder}', model.mailBoxName + '@' + model.domainName);
                                $scope.pageNotification.stuckNotifications.addSuccess(message, $scope.domainEmailRedirectnotificationAlertArguments);
                            }
                            else {
                                $scope.pageNotification.stuckNotifications.addError("Forwarder can not be duplicated.", $scope.domainEmailRedirectnotificationAlertArguments);
                            }
                        }
                        else if (action == 'edit') {
                            var item = nsModel.filter(function (obj) { return (obj.MailboxName.replace(/ /g, '') == model.mailBoxName.replace(/ /g, '') && obj.ForwardTo.replace(/ /g, '') == model.forwardTo.replace(/ /g, '')) })

                            if (item.length == 0) {
                                $scope.UpdateItemInGrid(model);
                                message = $scope.DomainsInfo.success_Contextual_EditForwarder.replace('{Forwarder}', model.oldMailBoxName + '@' + model.domainName);
                                $scope.pageNotification.stuckNotifications.addSuccess(message, $scope.domainEmailRedirectnotificationAlertArguments);
                            }
                            else {
                                $scope.pageNotification.stuckNotifications.addError("Forwarder can not be duplicated.", $scope.domainEmailRedirectnotificationAlertArguments);
                            }
                        }
                    }
                    else if (model.Call == 'Error') {
                        if (model.SameEntryFlag != 'SameEntry') {

                            $scope.pageNotification.stuckNotifications.addError($scope.DomainsInfo.error_Site_AddEditForwarder, $scope.domainEmailRedirectnotificationAlertArguments);
                        }
                        else {
                            $scope.pageNotification.stuckNotifications.addWarning($scope.DomainsInfo.error_Site_AddEditForwarder, $scope.domainEmailRedirectnotificationAlertArguments);

                        }
                    }
                }
            });
            modalInstance.opened.then(function () {
                $scope.IsForwarderModalOpened = true;
            });
        }

    }

    $scope.IsForwarderModalCatchAllOpened = false;
    $scope.openForwarderModalCatchAll = function (action, mailBoxName, destinationEmail, id, index) {
        if (!$scope.IsForwarderModalCatchAllOpened)
        {
            var modalInstance = $modal.open({
                templateUrl: "/Domains/BulkForwarderModalCatchAllPopup",
                controller: 'domainBulkEmailRedirectActionforCatchAllCtrl',
                size: 'lg',
                backdrop: 'static',
                resolve: {
                    domainName: function () {
                        return "example.com";
                    },

                    mailBoxName: function () {
                        return mailBoxName;
                    },
                    mailBoxId: function () {
                        return id;
                    },
                    forwardTo: function () {
                        return destinationEmail;
                    },
                    action: function () {
                        return action;
                    },
                    title: function () {
                        var modaltitle = '';
                        if (action == 'add') {
                            title = $scope.DomainsInfo.static_Modal_Title_AddCatchAll;
                        }
                        else if (action == 'edit') {
                            title = $scope.DomainsInfo.static_Modal_Title_EditCatchAll;

                        }
                        return title;
                    },
                    index: function () {
                        return index;
                    }
                }
            });
            modalInstance.result.then(function (model) {
                $scope.IsForwarderModalCatchAllOpened = false;
                var instance = this.instance;

                if (model != null && model != undefined && model != '') {
                    if (model.Call == 'Success') {
                        $scope.CatchAllFlag = true;

                        var message = '';

                        if (action == 'add') {
                            $scope.AddItemInGrid(model);
                            message = $scope.DomainsInfo.success_Contextual_AddCatchAll;
                        }
                        else if (action == 'edit') {
                            $scope.UpdateItemInGrid(model);
                            message = $scope.DomainsInfo.success_Contextual_EditCatchAll;
                        }
                        $scope.pageNotification.stuckNotifications.addSuccess(message, $scope.domainEmailRedirectnotificationAlertArguments);
                    }
                    else if (model.Call == 'Error') {
                        if (action == 'add') {
                            $scope.pageNotification.stuckNotifications.addError($scope.DomainsInfo.error_Site_AddEditForwarder, $scope.domainEmailRedirectnotificationAlertArguments);
                        }
                        else if (action == 'edit') {
                            if (model.SameEntryFlag != 'SameEntry') {
                                $scope.pageNotification.stuckNotifications.addError($scope.DomainsInfo.error_Site_AddEditForwarder, $scope.domainEmailRedirectnotificationAlertArguments);
                            }
                            else {
                                $scope.pageNotification.stuckNotifications.addWarning($scope.DomainsInfo.error_Site_AddEditForwarder, $scope.domainEmailRedirectnotificationAlertArguments);

                            }

                        }
                    }
                }
            });
            modalInstance.opened.then(function () { });
        }

    }
    $scope.IsChooseEmailRedirectListingModalPopUpOpened = false;
    $scope.openChooseEmailRedirectListingModalPopUp = function (domainName, mailBoxId, mailBoxName, forwardTo, actionToPerform) {

        $scope.SelectedDomainNames = domainName;
        $scope.SelectedmailBoxIds = mailBoxId;
        $scope.SelectedmailBoxNames = mailBoxName;

        var isBulkAction = false;
        if (!$scope.IsChooseEmailRedirectListingModalPopUpOpened)
        {
            var activeModalInstance = $modal.open(
                {
                    templateUrl: "/Domains/SSL/Common/PromptRemove",
                    controller: 'promptRemoveModalCtrl',
                    size: 'lg',
                    resolve: {
                        modalTitle: function () {
                            return $scope.DomainsInfo.static_Modal_Title_RemoveForwarder;
                        },
                        modalContent: function () {
                            if (actionToPerform.toLocaleLowerCase() == 'multiremove') {
                                isBulkAction = true;
                                return $scope.DomainsInfo.static_MultiRemovePromptIntro;
                            }
                        }
                    }
                }
            );

            activeModalInstance.result.then(function (msg) {
                $scope.IsChooseEmailRedirectListingModalPopUpOpened = false;
                if (msg == 'yes') {
                    if (actionToPerform.toLowerCase() == 'multiremove') {
                        var domainName = $scope.SelectedDomainNames;
                        var data = $scope.pageAction.pageNgGridSettings.parameters.selection.selectedItems;

                        $scope.pageRemoveAction.Click(domainName, '', '', '', data, actionToPerform, true);
                    }
                }

            },

            function () {
                $scope.IsChooseEmailRedirectListingModalPopUpOpened = false;
                activeModalInstance = null;
            });
            activeModalInstance.opened.then(function () {
                $scope.IsChooseEmailRedirectListingModalPopUpOpened = true;
            });
        }

    }

    $scope.pageRemoveAction = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            var loadingMessage = '';
            instance.Click = function (domainName, mailBoxId, mailBoxName, forwardTo, data, actionToPerform, isBulkAction) {
                var EmailForwarders = {};
                var Forwarders = [];
                var mailBoxNamesList = [];
                var forwardToList = [];

                if (actionToPerform == 'multiremove' || actionToPerform == 'remove') {
                    loadingMessage = '';

                    instance.asyncStatus(pageHelper.AsyncStatus.Loading, loadingMessage);

                    if (actionToPerform == 'multiremove') {
                        for (var i = 0; i < data.length; i++) {
                            Forwarders.push({
                                MailboxId: data[i].MailboxId.replace(/ /g, ''),
                                MailboxName: data[i].MailboxName.replace(/ /g, ''),
                                ForwardTo: data[i].ForwardTo.replace(/ /g, '')
                            });

                            mailBoxNamesList[i] = data[i].MailboxName.replace(/ /g, '');
                            forwardToList[i] = data[i].ForwardTo.replace(/ /g, '');
                        }
                    }
                    else if (actionToPerform == 'remove') {
                        Forwarders.push({
                            MailboxId: mailBoxId.replace(/ /g, ''),
                            MailboxName: mailBoxName.replace(/ /g, ''),
                            ForwardTo: forwardTo.replace(/ /g, '')
                        });

                        if (mailBoxName.indexOf('*') > -1) {

                            forwardToList = forwardTo.split(',');

                            for (i = 0; i < forwardToList.length; i++) {
                                mailBoxNamesList[i] = '*';
                            }
                        }
                        else {
                            mailBoxNamesList[0] = mailBoxName.replace(/ /g, '');
                            forwardToList[0] = forwardTo.replace(/ /g, '');
                        }
                    }

                    EmailForwarders = {
                        DomainName: domainName,
                        Forwarders: Forwarders
                    };

                    var removeItem = '';
                    var removeCount = 0;

                    var nsModel = $scope.pageAction.pageNgGridSettings.parameters.storage.requestData;

                    if (mailBoxNamesList.length > 1) {
                        for (i = 0; i < mailBoxNamesList.length; i++) {

                            if (mailBoxNamesList[i] == '*') {
                                removeItem = nsModel.filter(function (obj) { return (obj.MailboxName.replace(/ /g, '') == mailBoxNamesList[i].replace(/ /g, '')) })
                                removeCount = (actionToPerform == 'remove') ? 1 : (forwardToList[i].split(',')).length;
                            }
                            else {
                                removeItem = nsModel.filter(function (obj) { return (obj.MailboxName.replace(/ /g, '') == mailBoxNamesList[i].replace(/ /g, '') && obj.ForwardTo.replace(/ /g, '') == forwardToList[i].replace(/ /g, '')) })
                            }

                            $scope.UsedForwarders = (mailBoxNamesList[i] == '*') ? $scope.UsedForwarders - removeCount : $scope.UsedForwarders - removeItem.length;

                            for (var removecount = 0 ; removecount < removeItem.length; removecount++) {
                                $scope.pageAction.pageNgGridSettings.settings.actions.removeItem(removeItem[removecount]);
                            }
                        }
                    }
                    else {

                        if (actionToPerform == 'multiremove') {
                            mailBoxName = mailBoxNamesList[0];
                            forwardTo = forwardToList[0];
                        }

                        var removeItem = nsModel.filter(function (obj) { return obj.MailboxName.replace(/ /g, '') == mailBoxName.replace(/ /g, '') && obj.ForwardTo.replace(/ /g, '') == forwardTo.replace(/ /g, '') })

                        if (mailBoxName == '*') {
                            removeCount = (actionToPerform == 'remove') ? 1 : (forwardTo.split(',')).length;
                        }

                        $scope.UsedForwarders = (mailBoxName == '*') ? $scope.UsedForwarders - removeCount : $scope.UsedForwarders - removeItem.length;

                        for (var removecount = 0 ; removecount < removeItem.length; removecount++) {
                            $scope.pageAction.pageNgGridSettings.settings.actions.removeItem(removeItem[removecount]);
                        }
                    }
                }

                if ($scope.pageAction.pageNgGridSettings.parameters.storage.requestData.length == 0) {
                    $scope.showDoneButton = false;
                }
                if (isBulkAction == true) { $scope.uncheckCheckBoxes(); }
                $scope.updateListTitle($scope.UsedForwarders, $scope.AvailableForwarders);
                $scope.pageNotification.stuckNotifications.clear();
                instance.asyncStatus(pageHelper.AsyncStatus.Success, { DomainName: domainName, ForwarderName: mailBoxNamesList, Message: 'success' });
            }
        },
        onSuccess: function (params) {
            $scope.pageNotification.stuckNotifications.clear();

            var instance = this.instance;
            var notifyCatchAll = false;
            var forwarderName = '';

            if (params.ForwarderName.length > 1) {
                var forwarderNamesList = params.ForwarderName;

                for (i = 0; i < forwarderNamesList.length; i++) {
                    forwarderName = (forwarderNamesList[i] != '*') ? (forwarderNamesList[i] + '@' + params.DomainName) : 'Catch-All';

                    if (forwarderName == 'Catch-All') {
                        $scope.CatchAllFlag = false;
                    }

                    if (forwarderName == 'Catch-All') {
                        if (!notifyCatchAll) {
                            notifyCatchAll = true;
                            $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainsInfo.success_Contextual_EmailRedirectForwarderRemove.replace("{Forwarder}", forwarderName), $scope.domainEmailRedirectnotificationAlertArguments);
                        }
                    }
                    else {
                        $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainsInfo.success_Contextual_EmailRedirectForwarderRemove.replace("{Forwarder}", forwarderName), $scope.domainEmailRedirectnotificationAlertArguments);
                    }
                }
            }
            else {
                forwarderName = params.ForwarderName[0];

                forwarderName = (forwarderName != '*') ? (forwarderName + '@' + params.DomainName) : 'Catch-All';

                if (forwarderName == 'Catch-All') {
                    $scope.CatchAllFlag = false;
                    $scope.ShowCatchAllButton = true;
                }
                $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainsInfo.success_Contextual_EmailRedirectForwarderRemove.replace("{Forwarder}", forwarderName), $scope.domainEmailRedirectnotificationAlertArguments);
            }

            if ($scope.pageAction.pageNgGridSettings.parameters.storage.requestData.length == 0) {
                $scope.HideHorizontalLine = false;
            }
            else if ($scope.pageAction.pageNgGridSettings.parameters.storage.requestData.length > 1) {
                $scope.HideHorizontalLine = false;
            }
            else {
                $scope.HideHorizontalLine = true;
            }
        },
        onLoading: function (params) {
            var instance = this.instance;
            $scope.pageNotification.stuckNotifications.addLoading('Please wait.', false);
            instance.isDisabled = true;
            instance.showError = false;
        }
    });

    $scope.AddItemInGrid = function (model) {

        var nsModel = $scope.pageAction.pageNgGridSettings.parameters.storage.requestData;

        var addItemModel = {};
        
        addItemModel.ForwardTo = model.forwardTo;
        addItemModel.MailboxId = (nsModel.length + 1).toString();
        addItemModel.MailboxName = model.mailBoxName;
        addItemModel.chbId = "chbId" + (nsModel.length).toString();

        $scope.pageAction.pageNgGridSettings.settings.actions.addNewItem(addItemModel);

        var forwardToList = model.forwardTo.split(',');

        $scope.UsedForwarders = $scope.UsedForwarders + forwardToList.length;

        $scope.updateListTitle($scope.UsedForwarders, $scope.AvailableForwarders);        

        if (nsModel.length == 0) {
            $scope.HideHorizontalLine = false;
        }
        else if (nsModel.length > 1) {
            $scope.HideHorizontalLine = false;
        }
        else {
            $scope.HideHorizontalLine = true;
        }

        if (model.mailBoxName == '*') {
            $scope.ShowCatchAllButton = false;
        }

        $scope.uncheckCheckBoxes();

        if (nsModel.length > 0)
        {
            $scope.showDoneButton = true;
        }
        $scope.pageAction.pageNgGridSettings.parameters.mapping.isLoading = false;
        $scope.pageAction.pageNgGridSettings.parameters.storage.isFullData = true;
    }

    $scope.UpdateItemInGrid = function (model) {

        if (model.mailBoxName == '*') {
            var oldForwarderCount = model.oldDestination.split(',').length;
            var newForwarderCount = model.forwardTo.split(',').length;

            if (oldForwarderCount > newForwarderCount) {
                $scope.Used = $scope.Used - (oldForwarderCount - newForwarderCount);
            }
            else {
                $scope.Used = $scope.Used + (newForwarderCount - oldForwarderCount);
            }

            $scope.updateListTitle($scope.Used, $scope.Total);
        }

        $scope.pageAction.pageNgGridSettings.parameters.storage.pageData[model.index].MailboxName = model.mailBoxName;
        $scope.pageAction.pageNgGridSettings.parameters.storage.pageData[model.index].ForwardTo = model.forwardTo;
        $scope.uncheckCheckBoxes();
    }

    $scope.uncheckCheckBoxes = function () {
        $scope.pageAction.pageNgGridSettings.parameters.selection.selectedItems = [];
        var data = $scope.pageAction.pageNgGridSettings.parameters.storage.requestData;
        for (i = 0; i < data.length; i++)
            if (data[i].$ncColumnSelected == true)
                data[i].$ncColumnSelected = false;
        $('div#chb_selectAllForwarders').find('input[type="checkbox"]').removeAttr('checked');
    }

    $scope.updateListTitle = function (usedCount, totalCount) {
        $scope.UsedForwarders = usedCount;
        $scope.Used = usedCount;
        $scope.Total = 50;

        if (usedCount == 0)
        {
            $scope.showDoneButton = false;
            $scope.CatchAllFlag = false;
            $scope.ShowCatchAllButton = true;
        }
    }
}]);;
app.controller('expiringCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'ncGridEventNames',
function ($scope, $rootScope, httpRepository, $filter, $modal, notificationService, pageHelper, $q, ncGridParams, $sce, ncGridEventNames) {
    //#region Local properties

    $scope.pageHelper = pageHelper;//for call helpers methods from view
    $scope.pageNotification = new notificationService.instance();

    $scope.DomainInfoRes = DomainInfoRes;

    //#endregion
    $scope.sslnotificationAlertArguments = { isAutoHide: true, hasClose: true }

    $scope.pageBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.showLoadPanel = true;
            instance.showContent = false;

            instance.model = null;

            instance.pageNgGridSettings = new ncGridParams();
            instance.pageNgGridSettings.parameters.search.serchPropertyNames = ['model.DomainName', 'model.Registrar', 'model.ExpirationDate'];
            instance.pageNgGridSettings.parameters.mapping.serverChunkSize = 1000;
            instance.pageNgGridSettings.settings.getData = function ($defer, ncGridState) {
                instance.filterStatusPropertyNames = [];
                instance.filterFlagsPropertyNames = [];
                instance.filterFlagTrialPropertyName = [];
                instance.filterFlagNewPropertyName = [];
                httpRepository.expiringList.getExpiringList(ncGridState).then(function (result) {

                    var dataLength = 0;
                    if (result.Result != null && result.Result.Data != null) {
                        if (result.Msg != '') {
                            instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(result.Msg, {
                                hasClose: true,
                                isAutoHide: true
                            });
                        }
                        dataLength = result.Result.Data.length;
                        result.Result.Data = $scope.AssignCssClassForFields(result.Result.Data);

                        for (var i = 0; i < dataLength; i++) {
                            result.Result.Data[i] = createGridItemBehavior(result.Result.Data[i], instance);

                        }
                        $defer.resolve(result.Result);
                        instance.pageNgGridSettings.settings.actions.updateDropDownBtns();
                        instance.model = instance.pageNgGridSettings.parameters.storage.requestData;

                    }
                    else {
                        // IF NO RESULT FETCHED THEN DEFER WILL SHOWS THE NO RECORDS FOUND AND HIDE THE LOADER
                        $defer.resolve(result.Result);
                    }
                });
            }

            instance.pageNgGridSettings.eventListener.then(function (eventScope) {
                eventScope.$on(ncGridEventNames.ncGridRenderPageBefore, function (event, parameters) {
                    instance.pageNgGridSettings.parameters.storage.pageData.forEach(function (element) {
                        element.isExpand = false;
                    });
                });

            });
           instance.pageNgGridSettings.settings.reload();

           instance.statusList =
       [
{ header: "Active", propertyname: 'getServicesPropertiesPath(ProductStatusString)', propertyvalue: "Active" },
{ header: "Alert", propertyname: 'getServicesPropertiesPath(ProductStatusString)', propertyvalue: "Alert" },
{ header: "Grace", propertyname: 'getServicesPropertiesPath(ProductStatusString)', propertyvalue: "Grace" },
{ header: "Expired", propertyname: 'getServicesPropertiesPath(ProductStatusString)', propertyvalue: "Expired" },
       ];

           instance.flagsList = [
{ header: "Trial", propertyname: "getServicesPropertiesPath(IsTrial)", propertyvalue: true },
           ];
            instance.registrarsList = [
			 { header: "Namecheap", propertyname: "model.IsNamecheapDomain", propertyvalue: true },
			 { header: "Others", propertyname: "model.IsNamecheapDomain", propertyvalue: false },
            ];


            instance.asyncStatus(pageHelper.AsyncStatus.Success);
        },
        onSuccess: function (params) {
            var instance = this.instance;
            //instance.model = $scope.AssignCssClassForFields(params.Result.Data);
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;

        },
        onLoading: function (params) {
            var instance = this.instance;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });
    


    $scope.AssignCssClassForFields = function (model) {
        //CONDITION TO CHECK MODEL IS NULL OR UNDEFINED
        if (model != null && model != undefined) {
            //CONDITION TO MAKE SURE MODEL LENGTH IS > 0
            if (model.length > 0) {

                for (index = 0; index < model.length; index++) {
                    // DYNAMICALLY ADD DomainNameCssClass PROPERTY TO GET THE APPROPRIATE CSS FOR THE COLUMN 0 DOMAIN NAME
                    model[index].DomainNameCssClass = "";
                    if (!model[index].IsNamecheapDomain) {
                        model[index].DomainNameCssClass = "transfer-in";
                    }
                    else if (model[index].IsNamecheapDomain && !model[index].IsDomainOwner && (model[index].EditCapabilityCsv != '' && model[index].EditCapabilityCsv != undefined)) {
                        model[index].DomainNameCssClass = "with-rights";
                    }
                    else if (model[index].IsNamecheapDomain && !model[index].IsDomainOwner && (model[index].EditCapabilityCsv == '' || model[index].EditCapabilityCsv == undefined || model[index].EditCapabilityCsv == null)) {
                        model[index].DomainNameCssClass = "without-rights";
                    }
                    model[index].ExpirationDate = pageHelper.Date.dateFromJson(model[index].ExpirationDate);

                    if (model[index].Services.length > 0) {
                        for (indexService = 0; indexService < model[index].Services.length; indexService++) {
                            model[index].Services[indexService].ExpirationDate = pageHelper.Date.dateFromJson(model[index].Services[indexService].ExpirationDate);
                            model[index].Services[indexService].WGExpireDateTime = pageHelper.Date.dateFromJson(model[index].Services[indexService].WGExpireDateTime);
                            model[index].Services[indexService].PDNSExpireDateTime = pageHelper.Date.dateFromJson(model[index].Services[indexService].PDNSExpireDateTime);
                            model[index].Services[indexService].CssClass = '';
                            model[index].Services[indexService].SpanCssClass = '';
                            if (model[index].Services[indexService].ProductTypeString != null && model[index].Services[indexService].ProductTypeString != undefined && model[index].Services[indexService].ProductTypeString != "") {


                                if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'DOMAIN') {
                                    //bala
                                    if (model[index].Services[indexService].IsFreeDns == true) {
                                        if (model[index].Services[indexService].ProductStatusString == 'active') {
                                            model[index].Services[indexService].CssClass = 'icon-only icon-domain-freedns-active';
                                        }
                                        else {
                                            model[index].Services[indexService].CssClass = 'icon-only icon-domain-freedns-inactive';
                                        }
                                    }
                                    else {
                                        $scope.addfadeclass = "";
                                        if (!model[index].IsManaging && !model[index].IsDomainOwner && model[index].IsNamecheapDomain) {
                                            $scope.addfadeclass = "icon-fade";
                                        }
                                        if (model[index].Services[indexService].WGActiveStatus == true)
                                            model[index].Services[indexService].CssClass = 'icon-only ' + $scope.addfadeclass + ' icon-domain-whoisguard-active';
                                        else if (model[index].Services[indexService].WGActiveStatus == false) 
                                            model[index].Services[indexService].CssClass = 'icon-only ' + $scope.addfadeclass + ' icon-domain-whoisguard-inactive';
                                        else 
                                            model[index].Services[indexService].CssClass = 'icon-only ' + $scope.addfadeclass + ' icon-domain';

                                        if (model[index].Services[indexService].IsPDNSAvailable == true && model[index].Services[indexService].IsPDNSActive == true && model[index].Services[indexService].PDNSSubID != null && model[index].Services[indexService].PDNSSubID > 0 && model[index].ProviderSubType.toUpperCase() == 'PREMIUM')
                                            model[index].Services[indexService].CssClass = model[index].Services[indexService].CssClass + ' icon-domain-pdns-active';
                                        else if (model[index].Services[indexService].IsPDNSAvailable == true && model[index].Services[indexService].IsPDNSActive == true && model[index].Services[indexService].PDNSSubID != null && model[index].Services[indexService].PDNSSubID > 0 && model[index].ProviderSubType.toUpperCase() != 'PREMIUM')
                                            model[index].Services[indexService].CssClass = model[index].Services[indexService].CssClass + ' icon-domain-pdns-inactive';
                                    }
                                }
                                else if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'HOSTING') {
                                    model[index].Services[indexService].CssClass = 'icon-only icon-hosting';
                                }
                                else if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'PRIVATEEMAIL') {
                                    model[index].Services[indexService].CssClass = 'icon-only icon-email';
                                }
                                else if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'SELLDOMAINS' || model[index].Services[indexService].ProductTypeString.toUpperCase() == 'FREEDNS') {
                                    if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'SELLDOMAINS')
                                        model[index].Services[indexService].IsSellDomain = true;
                                    if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'FREEDNS')
                                        model[index].Services[indexService].IsFreeDns = true;
                                    if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'SELLDOMAINS') {
                                        model[index].Services[indexService].CssClass = 'icon-only icon-domain';
                                    }
                                    //bala
                                    if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'FREEDNS') {
                                        if (model[index].Services[indexService].ProductStatusString == 'active') {
                                            model[index].Services[indexService].CssClass = 'icon-only icon-domain-freedns-active';
                                        }
                                        else {
                                            model[index].Services[indexService].CssClass = 'icon-only icon-domain-freedns-inactive';
                                        }
                                    }

                                }
                                else if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'SSL') {
                                    if (model[index].Services[indexService].ProviderName != null && model[index].Services[indexService].ProviderName != undefined && model[index].Services[indexService].ProviderName == 'COMODO')
                                        model[index].Services[indexService].CssClass = 'icon-only strong icon-ssl-comodo';
                                    if (model[index].Services[indexService].ProviderName != null && model[index].Services[indexService].ProviderName != undefined && model[index].Services[indexService].ProviderName != 'COMODO')
                                        model[index].Services[indexService].CssClass = 'icon-only strong icon-ssl-symantec';
                                }
                                else if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'MAILCHIMP') {
                                    model[index].Services[indexService].CssClass = 'icon-only strong icon-mailchimp';
                                }
                                else if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'GOOGLE') {
                                    model[index].Services[indexService].CssClass = 'icon-only strong icon-google';
                                }
                            }

                            // THIS IS TO GET THE SPAN CSS CLASS FOR THE STATUS LIEK ACTIVE, EXPIRED, GRACE etc.
                            if (model[index].Services[indexService].ProductStatusString != null && model[index].Services[indexService].ProductStatusString != undefined && model[index].Services[indexService].ProductStatusString != '') {
                                model[index].Services[indexService].SpanCssClass = $scope.GetCssClassForStatus(model[index].Services[indexService].ProductStatusString)
                                //bala
                                if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'FREEDNS') {
                                    model[index].Services[indexService].SpanCssClass = '';
                                }
                            }

                            //GENERATE TEXT FOR THE STATUS LIST ITEM
                            model[index].Services[indexService].Status = [];

                            if (model[index].Services[indexService].Name != undefined && model[index].Services[indexService] != null && model[index].Services[indexService] != "") {
                                if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'SSL') {
                                    model[index].Services[indexService].Status.push(model[index].Services[indexService].Name);
                                    model[index].Services[indexService].Status.push(model[index].Services[indexService].ProductTypeDescription);
                                }
                                else
                                    model[index].Services[indexService].Status.push(model[index].Services[indexService].Name);
                            }
                            if (model[index].Services[indexService].ProductStatusString != undefined && model[index].Services[indexService].ProductStatusString != null && model[index].Services[indexService].ProductStatusString != "") {
                                model[index].Services[indexService].Status.push("<strong>Status:</strong> " + model[index].Services[indexService].ProductStatusString);
                            }

                            if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'DOMAIN') {
                                if (model[index].Services[indexService].WGActiveStatus == true)
                                    model[index].Services[indexService].Status.push("<strong>WhoisGuard: Active</strong>");
                                else if (model[index].Services[indexService].WGActiveStatus == false)
                                    model[index].Services[indexService].Status.push("<strong>WhoisGuard: InActive</strong>");

                                if (model[index].Services[indexService].IsPDNSAvailable == true && model[index].Services[indexService].IsPDNSActive == true && model[index].Services[indexService].PDNSSubID != null && model[index].Services[indexService].PDNSSubID > 0) {
                                    if (model[index].ProviderSubType.toUpperCase() == 'PREMIUM') {
                                        model[index].Services[indexService].Status.push("<strong>PremiumDNS: </strong>Active");
                                    }
                                    else if (model[index].ProviderSubType.toUpperCase() != 'PREMIUM') {
                                        model[index].Services[indexService].Status.push("<strong>PremiumDNS: </strong>InActive");
                                    }
                                }
                            }

                            if (model[index].Services[indexService].DueDate != undefined && model[index].Services[indexService].DueDate != null && model[index].Services[indexService].DueDate != "") {
                                model[index].Services[indexService].DueDate = pageHelper.Date.dateFromJson(model[index].Services[indexService].DueDate);
                                model[index].Services[indexService].Status.push("<strong>Due Date:</strong> " + $filter('date')(new Date(model[index].Services[indexService].DueDate), 'MMM d, yyyy'));
                            }
                            if (model[index].Services[indexService].ExpirationDate != undefined && model[index].Services[indexService].ExpirationDate != null && model[index].Services[indexService].ExpirationDate != "") {
                                model[index].Services[indexService].Status.push("<strong>Expiration:</strong> " + $filter('date')(new Date(model[index].Services[indexService].ExpirationDate), 'MMM d, yyyy'));
                            }
                            if (model[index].Services[indexService].ProductTypeString.toUpperCase() != 'DOMAIN' && (model[index].Services[indexService].TrailEndInDays != undefined && model[index].Services[indexService].TrailEndInDays != null && model[index].Services[indexService].TrailEndInDays != "")) {
                                model[index].Services[indexService].Status.push("<strong>Trial:</strong> " + "Ends in " + model[index].Services[indexService].TrailEndInDays + " days");
                            }

                        }
                    }

                }


            }

        }

        return model;
    }

    $scope.GetCssClassForStatus = function (Status) {
        var cssClass = '';
        if (Status.toUpperCase() == 'ACTIVE' || Status.toUpperCase() == 'ACTIVETRIAL') {
            cssClass = 'ok';
        }
        else if (Status.toUpperCase() == 'EXPIRED') {
            cssClass = 'danger';
        }
        else if (Status.toUpperCase() == 'ALERT' || Status.toUpperCase() == 'ALERTTRIAL') {
            cssClass = 'alert';
        }
        else if (Status.toUpperCase() == 'GRACE') {
            cssClass = 'grace';
        }
        else if (Status.toUpperCase() == 'ALERTBLOCKED') {
            cssClass = 'bloqued';
        }
        return cssClass;
    }

    function createGridItemBehavior(item, pageBehavior) {
        return new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                instance.model = item;
                instance.isExpand = true;
                instance.onExpand = function () {
                    instance.isExpand = !instance.isExpand;
                    if (instance.isExpand) {
                        $('.table-sticky-filters').trigger('update');
                    }
                }
                 instance.closeBuble = function (event) {
                    if (event.target.tagName != 'TD') return;
                    instance.isExpand = false;
                 }
                 instance.getServicesPropertiesPath = function (propertyName, propertyValue) {
                     var isMatches = false;
                     for (var index = 0; index < instance.model.Services.length; index++) {
                         if (propertyValue == "true")
                             propertyValue = "1"
                         if (instance.model.Services[index][propertyName] == propertyValue && (instance.model.Services[index].ShowAddToCartButton || instance.model.Services[index].ShowTransferButton || instance.model.Services[index].ShowWGAddToCartButton || instance.model.Services[index].ShowPDNSAddToCartButton)) {
                             isMatches = true;
                             instance.model.Services[index].inFilterScope = true;
                         } else {
                             instance.model.Services[index].inFilterScope = false;
                         }
                         instance.model.Services[index].inSearchScope = instance.model.Services[index].inFilterScope;
                     }
                     instance.isFilterMatches = isMatches;
                     instance.isMatchesService = isMatches;
                     instance.isExpand = isMatches;
                     return isMatches;
                 }
                
                instance.serviceAction = function (service) {
                    if (service != '' && service != undefined && service != null) {
                        if (service.ProductTypeString.toUpperCase() == "DOMAIN") {
                            if (service.ShowAddToCartButton || service.ShowWGAddToCartButton)
                                $scope.addToCart.renewDomain(service, service.ProductTypeString);
                            else if (service.ShowTransferButton)
                                $scope.addToCart.transferDomain(service);
                        }
                        else {
                            $scope.addToCart.renewProduct(service, service.ProductTypeString);
                        }
                    }
                }                
            },
            onSuccess: function (params) {
                var instance = this.instance;                
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
            },
            onActive: function (params) {
                var instance = this.instance;
            },
            onLoading: function (params) {
                var instance = this.instance;
            },
            onLocked: function (params) {
                var instance = this.instance;
            },
            onError: function (params) {
                var instance = this.instance;
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
        });
    }
    
    this.initialRenewUrl = function (domainRenewUrl, productRenewUrl, bulkProductRenewUrl, domainTransfer) {
        $scope.domainRenewUrl = domainRenewUrl;
        $scope.productRenewUrl = productRenewUrl;
        $scope.productBulkRenewUrl = bulkProductRenewUrl;
        $scope.domainTransfer = domainTransfer;
    }

    $scope.addToCart = new pageHelper.AsyncStateBehavior({

        constructor: function () {
            var instance = this.instance;
            instance.renewDomain = function (service, productType) {
                if ((productType.toUpperCase() == "DOMAIN" && !service.IsProductAddedToCart)
                    || (productType.toUpperCase() == "WHOISGUARD" && !service.IsWGAddedToCart) || (productType.toUpperCase() == "PREMIUMDNS" && !service.IsPDNSAddedToCart)) {
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                    var item = ''
                    if (productType.toUpperCase() == "DOMAIN") {
                        productType = "domains";
                        item = service.Name;
                    }
                    else if (productType.toUpperCase() == "WHOISGUARD") {
                        productType = "whoisguard";
                        item = service.WGSlotID;
                    }
                    else if (productType.toUpperCase() == "PREMIUMDNS") {
                        productType = "premiumdns";
                        item = service.Name;

                    }
                    if (item != '' && item != undefined && item != null) {
                        var duration = '1 YEAR';
                        httpRepository.expiringList.domainRenew($scope.domainRenewUrl, item, duration, productType).then(function (result) {
                            instance.asyncStatus((result.d.Success == true) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                            if (result.d.Success) {
                                if (productType.toUpperCase() == "DOMAINS") {
                                    service.IsProductAddedToCart = true;
                                }
                                else if (productType.toUpperCase() == "WHOISGUARD") {
                                    service.IsWGAddedToCart = true;
                                }
                                else if (productType.toUpperCase() == "PREMIUMDNS") {
                                    service.IsPDNSAddedToCart = true;
                                }
                            }
                            else
                                instance.asyncStatus(pageHelper.AsyncStatus.Error, '');
                        });
                    }
                    else
                        instance.asyncStatus(pageHelper.AsyncStatus.Error, '');
                }
            }
            instance.transferDomain = function (service) {
                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                var item = service.Name;
                if (item != '' && item != undefined && item != null && !service.IsProductAddedToCart) {
                    httpRepository.expiringList.domainTransfer($scope.domainTransfer, item, '', false, false).then(function (result) {
                        instance.asyncStatus((result.d.Success == true) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                        if (result.d.Success) {
                            service.IsProductAddedToCart = true;
                        }
                    });
                }
                else
                    instance.asyncStatus(pageHelper.AsyncStatus.Error, '');
            }
            instance.renewProduct = function (service, productType) {
                if (!service.IsProductAddedToCart) {
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                    if (productType.toUpperCase() == "PRIVATEEMAIL") {
                        productType = "oxhosting";
                    }
                    if (service.ProductId != '' && service.ProductId != undefined && service.ProductId != null) {
                        httpRepository.expiringList.productRenew($scope.productRenewUrl, service.ProductId, productType).then(function (result) {
                            instance.asyncStatus((result.d.Success) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                            if (result.d.Success) {
                                service.IsProductAddedToCart = true;
                            }
                        });
                    }
                    else
                        instance.asyncStatus(pageHelper.AsyncStatus.Error, 'Added Failed');
                }
            }
            instance.addAllItemToCart = function () {
                var domainServiceList='';
                var data = $scope.pageBehavior.pageNgGridSettings.parameters.selection.selectedItems;

                // Added to show a alert message if no domains are selected 
                if (data.length == 0) {
                    instance.showLoadPanel = false;
                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addWarning($scope.DomainInfoRes.alert_Site_AlertActionForEmptySelectionMessage_OnExpiryList, {
                        hasClose: true,
                        isAutoHide: true
                    });
                    return false;
                }

                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                var item = null;
                for (i = 0; i < data.length; i++) {
                    if (data[i].model != undefined) {
                        var services = data[i].model.Services;
                        for (j = 0; j < services.length; j++) {
                            item = services[j];
                            if (item != null && item.Name != undefined) {
                                if (item.ProductTypeString.toUpperCase() == "DOMAIN") {
                                    if (item.ShowAddToCartButton && !item.IsProductAddedToCart)
                                        domainServiceList += item.Name + ':domains' + ',';
                                    if (item.ShowWGAddToCartButton && !item.IsWGAddedToCart)
                                        domainServiceList += item.WGSlotID + ':whoisguard' + ',';
                                    if (item.ShowPDNSAddToCartButton && !item.IsPDNSAddedToCart)
                                        domainServiceList += item.PDNSSubID + ';' + item.Name + ':premiumdns' + ','; // + item.PDNSSubID + ':premiumdnsid' + ','
                                    if (item.ShowTransferButton && !item.IsProductAddedToCart)
                                        domainServiceList += item.Name + ':domains:transfer' + ',';
                                }
                                else if (item.ProductTypeString.toUpperCase() == "HOSTING" && !item.IsProductAddedToCart) {
                                    domainServiceList += item.ProductId + ':hosting' + ','
                                }
                                else if (item.ProductTypeString.toUpperCase() == "SSL" && !item.IsProductAddedToCart) {
                                    domainServiceList += item.ProductId + ':ssl' + ','
                                }
                                else if (item.ProductTypeString.toUpperCase() == "PRIVATEEMAIL" && !item.IsProductAddedToCart) {
                                    domainServiceList += item.ProductId + ':oxhosting' + ','
                                }
                            }
                        }
                    }
                    else {
                        item = data[i];
                        if (item != null && item.Name != undefined) {
                            if (item.ProductTypeString.toUpperCase() == "DOMAIN") {
                                if (item.ShowAddToCartButton && !item.IsProductAddedToCart) 
                                    domainServiceList += item.Name + ':domains' + ',';
                                if (item.ShowWGAddToCartButton && !item.IsWGAddedToCart)
                                    domainServiceList += item.WGSlotID + ':whoisguard' + ',';
                                if (item.ShowPDNSAddToCartButton && !item.IsPDNSAddedToCart)
                                    domainServiceList += item.PDNSSubID + ';' + item.Name + ':premiumdns' + ',';
                                if (item.ShowTransferButton && !item.IsProductAddedToCart)
                                    domainServiceList += item.Name + ':domains:transfer' + ',';
                            }
                            else if (item.ProductTypeString.toUpperCase() == "HOSTING" && !item.IsProductAddedToCart) {
                                domainServiceList += item.ProductId + ':hosting' + ','
                            }
                            else if (item.ProductTypeString.toUpperCase() == "SSL" && !item.IsProductAddedToCart) {
                                domainServiceList += item.ProductId + ':ssl' + ','
                            }
                            else if (item.ProductTypeString.toUpperCase() == "PRIVATEEMAIL" && !item.IsProductAddedToCart) {
                                domainServiceList += item.ProductId + ':oxhosting' + ','
                            }
                        }
                    }
                }
                if (domainServiceList != '' && domainServiceList != null && domainServiceList != undefined) {
                    domainServiceList = domainServiceList.slice(0, -1);
                    httpRepository.expiringList.addAllItemToCart($scope.productBulkRenewUrl, domainServiceList, 'expiringlist');
                }
                else
                    instance.asyncStatus(pageHelper.AsyncStatus.Error, '');
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            $scope.pageNotification.stuckNotifications.addSuccess('Added successfully', {
                hasClose: true,
                isAutoHide: true
            });

        },
        onActive: function (params) {
            var instance = this.instance;
            var result = params;
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Loading...', false);
        },
        onLocked: function (params) {
            var instance = this.instance;
            var result = params;
        },
        onError: function (params) {
            var errorMsg = (params != null && params != undefined && params != '') ? params.d.ResponseDescription : '';
            if (errorMsg == '' || errorMsg == null || errorMsg == undefined)
                errorMsg = "Added Failed";
            else {
                var msg = errorMsg.split(';');
                errorMsg = msg.length > 1 ? errorMsg.split(';')[1] : errorMsg;
            }
            $scope.pageNotification.stuckNotifications.addError(errorMsg, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });
}]);;
app.controller('expiringCtrl_old', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'ncGridEventNames',
function ($scope, $rootScope, httpRepository, $filter, $modal, notificationService, pageHelper, $q, ncGridParams, $sce, ncGridEventNames) {
    //#region Local properties

    $scope.pageHelper = pageHelper;//for call helpers methods from view
    $scope.pageNotification = new notificationService.instance();

    $scope.DomainInfoRes = DomainInfoRes;

    //#endregion
    $scope.sslnotificationAlertArguments = { isAutoHide: true, hasClose: true }

    $scope.pageBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            instance.showLoadPanel = true;
            instance.showContent = false;

            instance.model = null;

            instance.pageNgGridSettings = new ncGridParams();
            instance.pageNgGridSettings.parameters.search.serchPropertyNames = ['model.DomainName', 'model.Registrar', 'model.ExpirationDate'];
            instance.pageNgGridSettings.parameters.mapping.serverChunkSize = 1000;
            instance.pageNgGridSettings.settings.getData = function ($defer, ncGridState) {
                instance.filterStatusPropertyNames = [];
                instance.filterFlagsPropertyNames = [];
                instance.filterFlagTrialPropertyName = [];
                instance.filterFlagNewPropertyName = [];
                httpRepository.expiringList.getDomainsOld(ncGridState).then(function (result) {

                    var dataLength = 0;
                    if (result.Result != null && result.Result.Data != null) {
                        if (result.Msg != '') {
                            instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(result.Msg, {
                                hasClose: true,
                                isAutoHide: true
                            });
                        }
                        dataLength = result.Result.Data.length;
                        result.Result.Data = $scope.AssignCssClassForFields(result.Result.Data);

                        for (var i = 0; i < dataLength; i++) {
                            result.Result.Data[i] = createGridItemBehavior(result.Result.Data[i], instance);

                        }
                        $defer.resolve(result.Result);
                        instance.pageNgGridSettings.settings.actions.updateDropDownBtns();
                        instance.model = instance.pageNgGridSettings.parameters.storage.requestData;

                    }
                    else {
                        // IF NO RESULT FETCHED THEN DEFER WILL SHOWS THE NO RECORDS FOUND AND HIDE THE LOADER
                        $defer.resolve(result.Result);
                    }
                });
            }

            instance.pageNgGridSettings.eventListener.then(function (eventScope) {
                eventScope.$on(ncGridEventNames.ncGridRenderPageBefore, function (event, parameters) {
                    instance.pageNgGridSettings.parameters.storage.pageData.forEach(function (element) {
                        element.isExpand = false;
                    });
                });

            });
            instance.pageNgGridSettings.settings.reload();

            instance.statusList =
        [
 { header: "Active", propertyname: 'getServicesPropertiesPath(ProductStatusString)', propertyvalue: "Active" },
 { header: "Alert", propertyname: 'getServicesPropertiesPath(ProductStatusString)', propertyvalue: "Alert" },
 { header: "Grace", propertyname: 'getServicesPropertiesPath(ProductStatusString)', propertyvalue: "Grace" },
 { header: "Expired", propertyname: 'getServicesPropertiesPath(ProductStatusString)', propertyvalue: "Expired" },
        ];

            instance.flagsList = [
 { header: "Trial", propertyname: "getServicesPropertiesPath(IsTrial)", propertyvalue: true },
            ];
            instance.registrarsList = [
			 { header: "Namecheap", propertyname: "model.IsNamecheapDomain", propertyvalue: true },
			 { header: "Others", propertyname: "model.IsNamecheapDomain", propertyvalue: false },
            ];


            instance.asyncStatus(pageHelper.AsyncStatus.Success);
        },
        onSuccess: function (params) {
            var instance = this.instance;
            //instance.model = $scope.AssignCssClassForFields(params.Result.Data);
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onActive: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.showContent = true;

        },
        onLoading: function (params) {
            var instance = this.instance;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.showLoadPanel = false;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });



    $scope.AssignCssClassForFields = function (model) {
        //CONDITION TO CHECK MODEL IS NULL OR UNDEFINED
        if (model != null && model != undefined) {
            //CONDITION TO MAKE SURE MODEL LENGTH IS > 0
            if (model.length > 0) {

                for (index = 0; index < model.length; index++) {
                    // DYNAMICALLY ADD DomainNameCssClass PROPERTY TO GET THE APPROPRIATE CSS FOR THE COLUMN 0 DOMAIN NAME
                    model[index].DomainNameCssClass = "";
                    if (!model[index].IsNamecheapDomain) {
                        model[index].DomainNameCssClass = "transfer-in";
                    }
                    else if (model[index].IsNamecheapDomain && !model[index].IsDomainOwner && (model[index].EditCapabilityCsv != '' && model[index].EditCapabilityCsv != undefined)) {
                        model[index].DomainNameCssClass = "with-rights";
                    }
                    else if (model[index].IsNamecheapDomain && !model[index].IsDomainOwner && (model[index].EditCapabilityCsv == '' || model[index].EditCapabilityCsv == undefined || model[index].EditCapabilityCsv == null)) {
                        model[index].DomainNameCssClass = "without-rights";
                    }
                    model[index].ExpirationDate = pageHelper.Date.dateFromJson(model[index].ExpirationDate);

                    if (model[index].Services.length > 0) {
                        for (indexService = 0; indexService < model[index].Services.length; indexService++) {
                            model[index].Services[indexService].ExpirationDate = pageHelper.Date.dateFromJson(model[index].Services[indexService].ExpirationDate);
                            model[index].Services[indexService].WGExpireDateTime = pageHelper.Date.dateFromJson(model[index].Services[indexService].WGExpireDateTime);
                            model[index].Services[indexService].PDNSExpireDateTime = pageHelper.Date.dateFromJson(model[index].Services[indexService].PDNSExpireDateTime);
                            model[index].Services[indexService].CssClass = '';
                            model[index].Services[indexService].SpanCssClass = '';
                            if (model[index].Services[indexService].ProductTypeString != null && model[index].Services[indexService].ProductTypeString != undefined && model[index].Services[indexService].ProductTypeString != "") {


                                if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'DOMAIN') {
                                    //bala
                                    if (model[index].Services[indexService].IsFreeDns == true) {
                                        if (model[index].Services[indexService].ProductStatusString == 'active') {
                                            model[index].Services[indexService].CssClass = 'icon-only icon-domain-freedns-active';
                                        }
                                        else {
                                            model[index].Services[indexService].CssClass = 'icon-only icon-domain-freedns-inactive';
                                        }
                                    }
                                    else {
                                        $scope.addfadeclass = "";
                                        if (!model[index].IsManaging && !model[index].IsDomainOwner && model[index].IsNamecheapDomain) {
                                            $scope.addfadeclass = "icon-fade";
                                        }
                                        if (model[index].Services[indexService].WGActiveStatus == true)
                                            model[index].Services[indexService].CssClass = 'icon-only ' + $scope.addfadeclass + ' icon-domain-whoisguard-active';
                                        else if (model[index].Services[indexService].WGActiveStatus == false)
                                            model[index].Services[indexService].CssClass = 'icon-only ' + $scope.addfadeclass + ' icon-domain-whoisguard-inactive';
                                        else
                                            model[index].Services[indexService].CssClass = 'icon-only ' + $scope.addfadeclass + ' icon-domain';

                                        if (model[index].Services[indexService].IsPDNSAvailable == true && model[index].Services[indexService].IsPDNSActive == true && model[index].Services[indexService].PDNSSubID != null && model[index].Services[indexService].PDNSSubID > 0 && model[index].ProviderSubType.toUpperCase() == 'PREMIUM')
                                            model[index].Services[indexService].CssClass = model[index].Services[indexService].CssClass + ' icon-domain-pdns-active';
                                        else if (model[index].Services[indexService].IsPDNSAvailable == true && model[index].Services[indexService].IsPDNSActive == true && model[index].Services[indexService].PDNSSubID != null && model[index].Services[indexService].PDNSSubID > 0 && model[index].ProviderSubType.toUpperCase() != 'PREMIUM')
                                            model[index].Services[indexService].CssClass = model[index].Services[indexService].CssClass + ' icon-domain-pdns-inactive';
                                    }
                                }
                                else if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'HOSTING') {
                                    model[index].Services[indexService].CssClass = 'icon-only icon-hosting';
                                }
                                else if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'PRIVATEEMAIL') {
                                    model[index].Services[indexService].CssClass = 'icon-only icon-email';
                                }
                                else if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'SELLDOMAINS' || model[index].Services[indexService].ProductTypeString.toUpperCase() == 'FREEDNS') {
                                    if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'SELLDOMAINS')
                                        model[index].Services[indexService].IsSellDomain = true;
                                    if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'FREEDNS')
                                        model[index].Services[indexService].IsFreeDns = true;
                                    if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'SELLDOMAINS') {
                                        model[index].Services[indexService].CssClass = 'icon-only icon-domain';
                                    }
                                    //bala
                                    if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'FREEDNS') {
                                        if (model[index].Services[indexService].ProductStatusString == 'active') {
                                            model[index].Services[indexService].CssClass = 'icon-only icon-domain-freedns-active';
                                        }
                                        else {
                                            model[index].Services[indexService].CssClass = 'icon-only icon-domain-freedns-inactive';
                                        }
                                    }

                                }
                                else if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'SSL') {
                                    if (model[index].Services[indexService].ProviderName != null && model[index].Services[indexService].ProviderName != undefined && model[index].Services[indexService].ProviderName == 'COMODO')
                                        model[index].Services[indexService].CssClass = 'icon-only strong icon-ssl-comodo';
                                    if (model[index].Services[indexService].ProviderName != null && model[index].Services[indexService].ProviderName != undefined && model[index].Services[indexService].ProviderName != 'COMODO')
                                        model[index].Services[indexService].CssClass = 'icon-only strong icon-ssl-symantec';
                                }
                                else if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'MAILCHIMP') {
                                    model[index].Services[indexService].CssClass = 'icon-only strong icon-mailchimp';
                                }
                                else if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'GOOGLE') {
                                    model[index].Services[indexService].CssClass = 'icon-only strong icon-google';
                                }
                            }

                            // THIS IS TO GET THE SPAN CSS CLASS FOR THE STATUS LIEK ACTIVE, EXPIRED, GRACE etc.
                            if (model[index].Services[indexService].ProductStatusString != null && model[index].Services[indexService].ProductStatusString != undefined && model[index].Services[indexService].ProductStatusString != '') {
                                model[index].Services[indexService].SpanCssClass = $scope.GetCssClassForStatus(model[index].Services[indexService].ProductStatusString)
                                //bala
                                if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'FREEDNS') {
                                    model[index].Services[indexService].SpanCssClass = '';
                                }
                            }

                            //GENERATE TEXT FOR THE STATUS LIST ITEM
                            model[index].Services[indexService].Status = [];

                            if (model[index].Services[indexService].Name != undefined && model[index].Services[indexService] != null && model[index].Services[indexService] != "") {
                                if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'SSL') {
                                    model[index].Services[indexService].Status.push(model[index].Services[indexService].Name);
                                    model[index].Services[indexService].Status.push(model[index].Services[indexService].ProductTypeDescription);
                                }
                                else
                                    model[index].Services[indexService].Status.push(model[index].Services[indexService].Name);
                            }
                            if (model[index].Services[indexService].ProductStatusString != undefined && model[index].Services[indexService].ProductStatusString != null && model[index].Services[indexService].ProductStatusString != "") {
                                model[index].Services[indexService].Status.push("<strong>Status:</strong> " + model[index].Services[indexService].ProductStatusString);
                            }

                            if (model[index].Services[indexService].ProductTypeString.toUpperCase() == 'DOMAIN') {
                                if (model[index].Services[indexService].WGActiveStatus == true)
                                    model[index].Services[indexService].Status.push("<strong>WhoisGuard: Active</strong>");
                                else if (model[index].Services[indexService].WGActiveStatus == false)
                                    model[index].Services[indexService].Status.push("<strong>WhoisGuard: InActive</strong>");

                                if (model[index].Services[indexService].IsPDNSAvailable == true && model[index].Services[indexService].IsPDNSActive == true && model[index].Services[indexService].PDNSSubID != null && model[index].Services[indexService].PDNSSubID > 0) {
                                    if (model[index].ProviderSubType.toUpperCase() == 'PREMIUM') {
                                        model[index].Services[indexService].Status.push("<strong>PremiumDNS: </strong>Active");
                                    }
                                    else if (model[index].ProviderSubType.toUpperCase() != 'PREMIUM') {
                                        model[index].Services[indexService].Status.push("<strong>PremiumDNS: </strong>InActive");
                                    }
                                }
                            }

                            if (model[index].Services[indexService].DueDate != undefined && model[index].Services[indexService].DueDate != null && model[index].Services[indexService].DueDate != "") {
                                model[index].Services[indexService].DueDate = pageHelper.Date.dateFromJson(model[index].Services[indexService].DueDate);
                                model[index].Services[indexService].Status.push("<strong>Due Date:</strong> " + $filter('date')(new Date(model[index].Services[indexService].DueDate), 'MMM d, yyyy'));
                            }
                            if (model[index].Services[indexService].ExpirationDate != undefined && model[index].Services[indexService].ExpirationDate != null && model[index].Services[indexService].ExpirationDate != "") {
                                model[index].Services[indexService].Status.push("<strong>Expiration:</strong> " + $filter('date')(new Date(model[index].Services[indexService].ExpirationDate), 'MMM d, yyyy'));
                            }
                            if (model[index].Services[indexService].ProductTypeString.toUpperCase() != 'DOMAIN' && (model[index].Services[indexService].TrailEndInDays != undefined && model[index].Services[indexService].TrailEndInDays != null && model[index].Services[indexService].TrailEndInDays != "")) {
                                model[index].Services[indexService].Status.push("<strong>Trial:</strong> " + "Ends in " + model[index].Services[indexService].TrailEndInDays + " days");
                            }

                        }
                    }

                }


            }

        }

        return model;
    }

    $scope.GetCssClassForStatus = function (Status) {
        var cssClass = '';
        if (Status.toUpperCase() == 'ACTIVE' || Status.toUpperCase() == 'ACTIVETRIAL') {
            cssClass = 'ok';
        }
        else if (Status.toUpperCase() == 'EXPIRED') {
            cssClass = 'danger';
        }
        else if (Status.toUpperCase() == 'ALERT' || Status.toUpperCase() == 'ALERTTRIAL') {
            cssClass = 'alert';
        }
        else if (Status.toUpperCase() == 'GRACE') {
            cssClass = 'grace';
        }
        else if (Status.toUpperCase() == 'ALERTBLOCKED') {
            cssClass = 'bloqued';
        }
        return cssClass;
    }

    function createGridItemBehavior(item, pageBehavior) {
        return new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                instance.model = item;
                instance.isExpand = true;
                instance.onExpand = function () {
                    instance.isExpand = !instance.isExpand;
                    if (instance.isExpand) {
                        $('.table-sticky-filters').trigger('update');
                    }
                }
                instance.closeBuble = function (event) {
                    if (event.target.tagName != 'TD') return;
                    instance.isExpand = false;
                }
                instance.getServicesPropertiesPath = function (propertyName, propertyValue) {
                    var isMatches = false;
                    for (var index = 0; index < instance.model.Services.length; index++) {
                        if (propertyValue == "true")
                            propertyValue = "1"
                        if (instance.model.Services[index][propertyName] == propertyValue && (instance.model.Services[index].ShowAddToCartButton || instance.model.Services[index].ShowTransferButton || instance.model.Services[index].ShowWGAddToCartButton || instance.model.Services[index].ShowPDNSAddToCartButton)) {
                            isMatches = true;
                            instance.model.Services[index].inFilterScope = true;
                        } else {
                            instance.model.Services[index].inFilterScope = false;
                        }
                        instance.model.Services[index].inSearchScope = instance.model.Services[index].inFilterScope;
                    }
                    instance.isFilterMatches = isMatches;
                    instance.isMatchesService = isMatches;
                    instance.isExpand = isMatches;
                    return isMatches;
                }

                instance.serviceAction = function (service) {
                    if (service != '' && service != undefined && service != null) {
                        if (service.ProductTypeString.toUpperCase() == "DOMAIN") {
                            if (service.ShowAddToCartButton || service.ShowWGAddToCartButton)
                                $scope.addToCart.renewDomain(service, service.ProductTypeString);
                            else if (service.ShowTransferButton)
                                $scope.addToCart.transferDomain(service);
                        }
                        else {
                            $scope.addToCart.renewProduct(service, service.ProductTypeString);
                        }
                    }
                }
            },
            onSuccess: function (params) {
                var instance = this.instance;
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
            },
            onActive: function (params) {
                var instance = this.instance;
            },
            onLoading: function (params) {
                var instance = this.instance;
            },
            onLocked: function (params) {
                var instance = this.instance;
            },
            onError: function (params) {
                var instance = this.instance;
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
        });
    }

    this.initialRenewUrl = function (domainRenewUrl, productRenewUrl, bulkProductRenewUrl, domainTransfer) {
        $scope.domainRenewUrl = domainRenewUrl;
        $scope.productRenewUrl = productRenewUrl;
        $scope.productBulkRenewUrl = bulkProductRenewUrl;
        $scope.domainTransfer = domainTransfer;
    }

    $scope.addToCart = new pageHelper.AsyncStateBehavior({

        constructor: function () {
            var instance = this.instance;
            instance.renewDomain = function (service, productType) {
                if ((productType.toUpperCase() == "DOMAIN" && !service.IsProductAddedToCart)
                    || (productType.toUpperCase() == "WHOISGUARD" && !service.IsWGAddedToCart) || (productType.toUpperCase() == "PREMIUMDNS" && !service.IsPDNSAddedToCart)) {
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                    var item = ''
                    if (productType.toUpperCase() == "DOMAIN") {
                        productType = "domains";
                        item = service.Name;
                    }
                    else if (productType.toUpperCase() == "WHOISGUARD") {
                        productType = "whoisguard";
                        item = service.WGSlotID;
                    }
                    else if (productType.toUpperCase() == "PREMIUMDNS") {
                        productType = "premiumdns";
                        item = service.Name;

                    }
                    if (item != '' && item != undefined && item != null) {
                        var duration = '1 YEAR';
                        httpRepository.expiringList.domainRenewOld($scope.domainRenewUrl, item, duration, productType).then(function (result) {
                            instance.asyncStatus((result.d.Success == true) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                            if (result.d.Success) {
                                if (productType.toUpperCase() == "DOMAINS") {
                                    service.IsProductAddedToCart = true;
                                }
                                else if (productType.toUpperCase() == "WHOISGUARD") {
                                    service.IsWGAddedToCart = true;
                                }
                                else if (productType.toUpperCase() == "PREMIUMDNS") {
                                    service.IsPDNSAddedToCart = true;
                                }
                            }
                            else
                                instance.asyncStatus(pageHelper.AsyncStatus.Error, '');
                        });
                    }
                    else
                        instance.asyncStatus(pageHelper.AsyncStatus.Error, '');
                }
            }
            instance.transferDomain = function (service) {
                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                var item = service.Name;
                if (item != '' && item != undefined && item != null && !service.IsProductAddedToCart) {
                    httpRepository.expiringList.domainTransfer($scope.domainTransfer, item, '', false, false).then(function (result) {
                        instance.asyncStatus((result.d.Success == true) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                        if (result.d.Success) {
                            service.IsProductAddedToCart = true;
                        }
                    });
                }
                else
                    instance.asyncStatus(pageHelper.AsyncStatus.Error, '');
            }
            instance.renewProduct = function (service, productType) {
                if (!service.IsProductAddedToCart) {
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                    if (productType.toUpperCase() == "PRIVATEEMAIL") {
                        productType = "oxhosting";
                    }
                    if (service.ProductId != '' && service.ProductId != undefined && service.ProductId != null) {
                        httpRepository.expiringList.productRenew($scope.productRenewUrl, service.ProductId, productType).then(function (result) {
                            instance.asyncStatus((result.d.Success) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                            if (result.d.Success) {
                                service.IsProductAddedToCart = true;
                            }
                        });
                    }
                    else
                        instance.asyncStatus(pageHelper.AsyncStatus.Error, 'Added Failed');
                }
            }
            instance.addAllItemToCart = function () {
                var domainServiceList = '';
                var data = $scope.pageBehavior.pageNgGridSettings.parameters.selection.selectedItems;

                // Added to show a alert message if no domains are selected 
                if (data.length == 0) {
                    instance.showLoadPanel = false;
                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addWarning($scope.DomainInfoRes.alert_Site_AlertActionForEmptySelectionMessage_OnExpiryList, {
                        hasClose: true,
                        isAutoHide: true
                    });
                    return false;
                }

                instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                var item = null;
                for (i = 0; i < data.length; i++) {
                    if (data[i].model != undefined) {
                        var services = data[i].model.Services;
                        for (j = 0; j < services.length; j++) {
                            item = services[j];
                            if (item != null && item.Name != undefined) {
                                if (item.ProductTypeString.toUpperCase() == "DOMAIN") {
                                    if (item.ShowAddToCartButton && !item.IsProductAddedToCart)
                                        domainServiceList += item.Name + ':domains' + ',';
                                    if (item.ShowWGAddToCartButton && !item.IsWGAddedToCart)
                                        domainServiceList += item.WGSlotID + ':whoisguard' + ',';
                                    if (item.ShowPDNSAddToCartButton && !item.IsPDNSAddedToCart)
                                        domainServiceList += item.PDNSSubID + ';' + item.Name + ':premiumdns' + ','; // + item.PDNSSubID + ':premiumdnsid' + ','
                                    if (item.ShowTransferButton && !item.IsProductAddedToCart)
                                        domainServiceList += item.Name + ':domains:transfer' + ',';
                                }
                                else if (item.ProductTypeString.toUpperCase() == "HOSTING" && !item.IsProductAddedToCart) {
                                    domainServiceList += item.ProductId + ':hosting' + ','
                                }
                                else if (item.ProductTypeString.toUpperCase() == "SSL" && !item.IsProductAddedToCart) {
                                    domainServiceList += item.ProductId + ':ssl' + ','
                                }
                                else if (item.ProductTypeString.toUpperCase() == "PRIVATEEMAIL" && !item.IsProductAddedToCart) {
                                    domainServiceList += item.ProductId + ':oxhosting' + ','
                                }
                            }
                        }
                    }
                    else {
                        item = data[i];
                        if (item != null && item.Name != undefined) {
                            if (item.ProductTypeString.toUpperCase() == "DOMAIN") {
                                if (item.ShowAddToCartButton && !item.IsProductAddedToCart)
                                    domainServiceList += item.Name + ':domains' + ',';
                                if (item.ShowWGAddToCartButton && !item.IsWGAddedToCart)
                                    domainServiceList += item.WGSlotID + ':whoisguard' + ',';
                                if (item.ShowPDNSAddToCartButton && !item.IsPDNSAddedToCart)
                                    domainServiceList += item.PDNSSubID + ';' + item.Name + ':premiumdns' + ',';
                                if (item.ShowTransferButton && !item.IsProductAddedToCart)
                                    domainServiceList += item.Name + ':domains:transfer' + ',';
                            }
                            else if (item.ProductTypeString.toUpperCase() == "HOSTING" && !item.IsProductAddedToCart) {
                                domainServiceList += item.ProductId + ':hosting' + ','
                            }
                            else if (item.ProductTypeString.toUpperCase() == "SSL" && !item.IsProductAddedToCart) {
                                domainServiceList += item.ProductId + ':ssl' + ','
                            }
                            else if (item.ProductTypeString.toUpperCase() == "PRIVATEEMAIL" && !item.IsProductAddedToCart) {
                                domainServiceList += item.ProductId + ':oxhosting' + ','
                            }
                        }
                    }
                }
                if (domainServiceList != '' && domainServiceList != null && domainServiceList != undefined) {
                    domainServiceList = domainServiceList.slice(0, -1);
                    httpRepository.expiringList.addAllItemToCart($scope.productBulkRenewUrl, domainServiceList, 'expiringlist');
                }
                else
                    instance.asyncStatus(pageHelper.AsyncStatus.Error, '');
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
            $scope.pageNotification.stuckNotifications.addSuccess('Added successfully', {
                hasClose: true,
                isAutoHide: true
            });

        },
        onActive: function (params) {
            var instance = this.instance;
            var result = params;
        },
        onLoading: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Loading...', false);
        },
        onLocked: function (params) {
            var instance = this.instance;
            var result = params;
        },
        onError: function (params) {
            var errorMsg = (params != null && params != undefined && params != '') ? params.d.ResponseDescription : '';
            if (errorMsg == '' || errorMsg == null || errorMsg == undefined)
                errorMsg = "Added Failed";
            else {
                var msg = errorMsg.split(';');
                errorMsg = msg.length > 1 ? errorMsg.split(';')[1] : errorMsg;
            }
            $scope.pageNotification.stuckNotifications.addError(errorMsg, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });
}]);;
app.factory('expiringDomainProducts', [
	'pageHelper',
	'cartService',
	'expiringSoonService',
	'notificationService',
	'$rootScope',
	function(pageHelper, cartService, expiringSoonService, notificationService, $rootScope) {
		var GlobalErrorMessages = window.GlobalErrorMessages || {};

		return {
			create: createBehavior
		};

		function createBehavior(domainName, dataSource) {
			var eventScope = $rootScope.$new(true);
			return new pageHelper.AsyncStateBehavior({
				constructor: function() {
					var instance = this.instance;
					var data = dataSource();
					var products = data.getProducts() || [];

					angular.extend(instance, {
						domainName: domainName,
						allProductsSelected: false,
						notifications: new notificationService.instance(),
						activeProducts: products.filter(function(product) {
											return product.DomainName === domainName;
										}).sort(function(p1, p2) {
											return p1.ExpirationDateUnix - p2.ExpirationDateUnix;
										}),
						onDestroy: function(destroyHandler) {
							eventScope.$on('$destroy', destroyHandler);
						},
						destroy: function() {
							eventScope.$destroy();
							eventScope = null;
						},
						renewAllProducts: function() {
							if (!instance.allProductsSelected) {
								return;
							}

							return expiringSoonService
								.renewProducts(instance, instance.notifications, instance.activeProducts);
						}
					});
				},
				onLoading: function() {
					this.instance.operationIsInProgress = true;
				},
				onSuccess: function() {
					this.instance.operationIsInProgress = false;
				},
				onError: function(params) {
					this.instance.operationIsInProgress = false;
					this.instance.notifications.stuckNotifications.addError(params.msg || GlobalErrorMessages.error_Site_PleaseTryAgain, {
						hasClose: true,
						isAutoHide: true
					});
				}
			});
		}
	}
]);;
app.controller('expiringListRouterController', [
	'$scope',
    'ncLocation',
	'$window',
    'cartService',
    'expiringDomainsList',
    'expiringProductsList',
    'popupWindow',
    'sslRepository',
    function ($scope, ncLocation, $window, cartService, expiringDomainsList, expiringProductsList, popupWindow, sslRepository) {
        'use strict';
        var vm = this;
        var states = {
            domains: { name: 'domains', url: 'domains', highlightMenuClass: 'expiring-domains' },
            products: { name: 'products', url: 'products', highlightMenuClass: 'expiring-products' }
        };
        var defaultState = states.domains;
        updateState();

        $window.addEventListener('hashchange', updateState);
        $scope.$on('$destroy', function () {
            $window.removeEventListener('hashchange', updateState);
            vm.productsListBehaviour && vm.productsListBehaviour.destroy();
        });
        $scope.$on(cartService.cardHasBeenChangedEvent, function() {
            cartService.updateSubtotal();
        });

        var cartItemsPromise = cartService.getCartItems();
	    var cartItemsProvider = function() {
            return cartItemsPromise;
        };
        var domainListBehaviour = expiringDomainsList.create(cartItemsProvider);
        angular.extend(vm, {
            dateFormat: 'MMM d, yyyy',
            domainListBehaviour: domainListBehaviour,
            productsListBehaviour: expiringProductsList.create(domainListBehaviour.getDomainsIndex(), cartItemsProvider),
            states: states,
            setState: function (newState) {
                ncLocation.setHash(newState ? newState.url : defaultState.url);
            }
        });

        function setState(newState) {
            vm.state = newState;
            vm.state.highlightMenuClass && highlightMenuItem(vm.state.highlightMenuClass);
            vm.domainListBehaviour.gridSettings.settings.mapping.resetFilters();
            vm.productsListBehaviour.gridSettings.settings.mapping.resetFilters();
            if (vm.productsListBehaviour.domainDetails) {
                vm.productsListBehaviour.domainDetails.destroy();
            }

            if (vm.state !== states.domains) {
                vm.domainListBehaviour.stopProcessing();
            }
        }

        function highlightMenuItem(cssClass) {
            // Such dirty solution is needed to support better customer experience
            // and not to show users page through post-back lifecycle
            var selectedClass = 'selected';
            var rootMenu = $('#apnav').find('nav>ul'); // manipulation should be only with second-level menu
            rootMenu.find('ul>li.' + selectedClass).removeClass(selectedClass);
            rootMenu.find('ul>li.' + cssClass).addClass(selectedClass);
        }

        function updateState() {
            $scope.$evalAsync(function () {
                setState(getPageState(ncLocation.getHash()));
            });
        }

        function getPageState(locationHash) {
            if (!locationHash) {
                return defaultState;
            }

            var state, statePair;
            for (state in states) if (states.hasOwnProperty(state)) {
                statePair = states[state];
                if (statePair.name === locationHash) {
                    return statePair;
                }
            }

            return defaultState;
        }

        $scope.symantecSunsetDate = SymantecSunsetDate;
        $scope.siteServerNameUrl = SiteServerNameUrl;

        $scope.openPopupRenew = function (certificateId,productTitle,isSan) {
            var symantecCertType = productTitle.split("-").pop().trim();
            if (symantecCertType.toLowerCase() == 'ssl web server ev')
            {
                symantecCertType = 'SSL Webserver EV';
            }
            else if (symantecCertType.toLowerCase() == 'true business id'){
                symantecCertType = 'True BusinessID';
            }
            var sansCount = (isSan == true) ? 1 : 0;
            $scope.symantecCertDetails = {
                certificateId: certificateId,
                certificateType: symantecCertType,
                validYears: 1,
                sansQty: sansCount
            }
            popupWindow.openPopupWindow($scope.symantecCertDetails, 'renew', $scope.symantecSunsetDate, $scope.siteServerNameUrl);
        }
    }
]);
;
app.controller('renewExpiringDominaListBulkActionCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'ncWizardService',
function ($scope, $rootScope, httpRepository, $filter, $modal, notificationService, pageHelper, $q, ncGridParams, $sce, ncWizardService) {


    $scope.step1Notification = new notificationService.instance();
    $scope.pageNotification = new notificationService.instance();

    this.initialize = function (model) {
        $scope.Model = model.Model;
        var messageModel = model.MessageModel;
        if (model.GotoNextPage == true)
            ncWizardService.moveNext();
        if (messageModel.MessageType != null && messageModel.Message != null) {
            if (messageModel.MessageType.toLowerCase() == "alert")
                $scope.pageNotification.alerts.addWarning(messageModel.Message, {
                    hasClose: true,
                    isAutoHide: false
                });
            else if (messageModel.MessageType.toLowerCase() == "success")
                $scope.pageNotification.alerts.addSuccess(messageModel.Message, {
                    hasClose: true,
                    isAutoHide: false
                });
            else if (messageModel.MessageType.toLowerCase() == "error")
                $scope.pageNotification.alerts.addError(messageModel.Message, {
                    hasClose: true,
                    isAutoHide: false
                });
        }
    }

    $scope.CancelBulkAction = $rootScope.closeLightbox = function () {
        httpRepository.domainList.goToDomainList();
    }

    $scope.RenewExpiringBulkModification = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            var finalServiceNames = [];  //Get Domain Names which has a productType equal to the selected service type.
            var finalServiceTypes = [];
            var id = [];
            instance.Step1Action = function () {
                $scope.step1Notification.alerts.clear();
                instance.asyncStatus(pageHelper.AsyncStatus.Loading, "Loading...");
                var domainServiceList = "";
                var domainServiceArray = [];
                $('input:checkbox[name=selecteddomains]:checked').each(function () {

                    var domainService = "";
                    domainService = domainService + $(this).attr('item-value');
                    // Already exists in list
                    var isExist = false;
                    for (i = 0; i < domainServiceArray.length; i++) {
                        if (domainServiceArray[i].DomainName == domainService) {
                            isExist = true;
                        }
                    }
                    if (isExist == false) {
                        if (domainServiceList != "")
                            domainServiceList = domainServiceList + ",";
                        domainServiceList = domainServiceList + domainService;
                        domainServiceArray.push(domainService);
                    }
                });
                if (domainServiceArray.length > 0) {
                    httpRepository.domainListAction.renewExpiringAddToCart(domainServiceList, $('a[data-add-to-cart]').attr('data-add-to-cart'));
                }
                else {
                    $scope.step1Notification.stuckNotifications.clear();
                    $scope.step1Notification.alerts.addError("Select atleast one valid domain to proceed to the next step!.", {
                        hasClose: true,
                        isAutoHide: true
                    });
                    $('html, body').animate({ scrollTop: $('div[link="step1Notification"]').offset().top - 20 }, 200);
                }
            }
        },

        onSuccess: function (params) {
            var instance = this.instance;
            instance.showContent = true;
            instance.model = params.Result;
            $scope.step1Notification.alerts.clear();
        },

        onActive: function (params) {
            var instance = this.instance;
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },

        onLoading: function (params) {
            var instance = this.instance;
            $scope.pageNotification.alerts.clear();
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('<B>' + params + '</B> Please wait.', false);
            instance.isDisabled = true;
            instance.showError = false;
        },

        onError: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.step1Notification.stuckNotifications.addError(params.msg, {
                hasClose: true,
                isAutoHide: true
            });
        },

        onLocked: function (params) {
            var instance = this.instance;
        }
    });
}]);;
app.controller('whoisGuardDomainBulkActionCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'ncWizardService',
function ($scope, $rootScope, httpRepository, $filter, $modal, notificationService, pageHelper, $q, ncGridParams, $sce, ncWizardService) {

    $scope.pageHelper = pageHelper;
    $scope.step1Notification = new notificationService.instance();
    $scope.pageNotification = new notificationService.instance();

    this.initialize = function (model) {
        $scope.Model = model.Model;
        $scope.Messages = model.Messages;
        $scope.SelectedDomainList = [];
    }

    $scope.CancelBulkAction = $rootScope.closeLightbox = function () {
        httpRepository.domainList.goToDomainList();
    }

    $scope.NumberofWG = 0;
    $scope.TotalAmount = 0.00;
    
    $scope.pageAction = new pageHelper.AsyncStateBehavior({
        constructor: function () {
            var instance = this.instance;
            var loadingMessage = '';
            instance.SendConfirmationMail = false;
            instance.IsActivateWhoisGuard = "true";
            instance.Step1Action = function () {
                $scope.step1Notification.alerts.clear();
                //loadingMessage = 'Loading ...';
                //instance.asyncStatus(pageHelper.AsyncStatus.Loading, loadingMessage);
                $scope.SelectedDomainList = [];
                $scope.NumberofWG = 0;
                $scope.TotalAmount = 0.00;
                
                // Assigning checked domains to the list
                $('input:checkbox[name=selecteddomains]:checked').each(function () {
                    var domainListItem = {};
                    domainListItem.DomainName = $(this).attr('id');
                    var IndexofDot = domainListItem.DomainName.indexOf(".");
                    domainListItem.tld = domainListItem.DomainName.substr(IndexofDot + 1);
                    var isExist = false, canAddToList = false;
                    var domainList = $scope.SelectedDomainList;
                    // Already exists in list
                    for (i = 0; i < domainList.length; i++) {
                        if (domainList[i].DomainName == domainListItem.DomainName) {
                            isExist = true;
                        }
                    }

                    if (!isExist) {
                        for (i = 0; i < $scope.Model.WhoisGuardItems.length; i++) {
                            if ($scope.Model.WhoisGuardItems[i].DomainName == domainListItem.DomainName) {
                                if ($scope.Model.WhoisGuardItems[i].CanSelectDomain == true) {
                                    canAddToList = true;
                                    domainListItem.PurchaseWG = $scope.Model.WhoisGuardItems[i].PurchaseWG;
                                    if (domainListItem.PurchaseWG == true) {
                                        $scope.TotalAmount = $scope.TotalAmount + $scope.Model.WhoisGuardPurchasePrice;
                                        $scope.NumberofWG = $scope.NumberofWG + 1;
                                    }
                                    // Renew not needed to be considered for bulk action
                                    //domainListItem.RenewWG = $scope.Model.WhoisGuardItems[i].RenewWG;
                                    //if (domainListItem.RenewWG == true) {
                                    //    $scope.TotalAmount = $scope.TotalAmount + $scope.Model.WhoisGuardRenewPrice;
                                    //    $scope.NumberofWG = $scope.NumberofWG + 1;
                                    //}
                                }
                                else {
                                    canAddToList = false;
                                }
                            }
                        }
                        if (canAddToList) {
                            $scope.SelectedDomainList.push(domainListItem)
                        }
                    }

                });
                if ($scope.SelectedDomainList.length > 0) {
                    instance.asyncStatus(pageHelper.AsyncStatus.Active);
                    ncWizardService.moveNext();
                }
                else if ($scope.SelectedDomainList.length == 0) {
                    $scope.step1Notification.alerts.addError($scope.Messages.SelectAtleastOneDomainToProceed, {
                        hasClose: true,
                        isAutoHide: true
                    });
                    $('html, body').animate({ scrollTop: $('div[link="step1Notification"]').offset().top - 20 }, 200);
                }
                else {
                    $scope.step1Notification.alerts.addError($scope.Messages.CannotProceedToSetp2, {
                        hasClose: true,
                        isAutoHide: true
                    });
                    $('html, body').animate({ scrollTop: $('div[link="step1Notification"]').offset().top - 20 }, 200);
                }
                    
            }
            instance.Step2Action = function () {
                $scope.pageNotification.alerts.clear();
                loadingMessage = 'Loading ...';
                instance.asyncStatus(pageHelper.AsyncStatus.Loading, loadingMessage);
                //string[] DomainNames, string paramKey, string paramValue, string[] serviceType, string BulkActionType, bool? isEmailNotifyEnabled_YN
                //$scope.SelectedDomainList,
                var domainNames = [];
                var serviceType = [];
                for (i = 0; i < $scope.SelectedDomainList.length; i++) {
                    domainNames.push($scope.SelectedDomainList[i].DomainName);
                    serviceType.push("whoisguard");
                }
                var paramValue = "";
                if (instance.IsActivateWhoisGuard == "true") {
                    paramValue = "enable";
                }
                else {
                    paramValue = "disable";
                }
                httpRepository.domainList.domainListBulkAction(domainNames.join(','), serviceType.join(','), "action", paramValue, "modifywg", $scope.pageAction.SendConfirmationMail).then(
                   function (res) {
                       var result = res.Result;
                       // Show lightbox based on the result
                       if (res.Error == false) {
                           //var bulkActionResult = {};
                           //var domainList = "";
                           //var isSuccess = true;
                           //var slotIdList = "";
                           //for (i = 0; i < result.WGList.length; i++) {
                           //    if (result.WGList[i].ActionType.toLowerCase() == 'purchase'.toLocaleLowerCase()) {
                           //        if (domainList != "")
                           //            domainList = domainList + ",";
                           //        domainList = domainList + result.WGList[i].DomainName;
                           //    }
                           //    else if (result.WGList[i].ActionType.toLowerCase() == 'renew'.toLocaleLowerCase()) {
                           //        if (slotIdList != "")
                           //            slotIdList = slotIdList + ",";
                           //        slotIdList = slotIdList + result.WGList[i].WGSlotId;
                           //    }
                           //}
                           //bulkActionResult.DomainList = domainList;
                           //bulkActionResult.IsSuccess = isSuccess;
                           //bulkActionResult.SlotIdList = slotIdList;
                           //bulkActionResult.IsEnable = result.IsEnable;
                           //bulkActionResult.HasItemsForCart = result.WGList.length > 0;
                           //bulkActionResult.IsSendMail = result.IsSendMail;

                           //httpRepository.domainList.whoIsGuardBulkActionSuccess(JSON.stringify(bulkActionResult), "whoisguard");
                           httpRepository.domainList.whoIsGuardBulkActionSuccess(JSON.stringify(result), "whoisguard");
                       }
                       else {
                           $scope.pageNotification.stuckNotifications.clear();
                           $scope.pageNotification.alerts.addError(res.Msg, {
                               hasClose: true,
                               isAutoHide: false
                           });
                           $('html, body').animate({ scrollTop: $('div[link="pageNotification"]').offset().top - 20 }, 200);
                           //instance.asyncStatus(pageHelper.AsyncStatus.Error, res.Msg);
                       }
                   });
            }
        },
        onSuccess: function (params) {
            var instance = this.instance;
            if (params.sender == 'getModel') {
                instance.showContent = true;
                instance.model = params.Result;
                instance.pageNgGridSettings.settings.reload();
            }
            $scope.pageNotification.alerts.clear();
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(params.Message, {
                hasClose: true,
                isAutoHide: true
            });
        },
        onActive: function (params) {
            var instance = this.instance;
            $scope.pageNotification.alerts.clear();
            instance.asyncStatus(pageHelper.AsyncStatus.Active);
        },
        onLoading: function (params) {
            var instance = this.instance;
            $scope.pageNotification.alerts.clear();
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('<B>' + params + '</B> Please wait.', false);
            instance.isDisabled = true;
            instance.showError = false;
        },
        onLocked: function (params) {
            var instance = this.instance;
        },
        onWarning: function (params) {
            var instance = this.instance;
            $scope.pageNotification.alerts.clear();
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addWarning('<B>' + params + '</B>', {
                hasClose: true,
                isAutoHide: true
            });
            instance.isDisabled = false;
            instance.showError = false;
        },
        onError: function (params) {
            var instance = this.instance;
            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Message, {
                hasClose: true,
                isAutoHide: true
            });
        }
    });
}]);
;
app.controller('domainTransferAuthorizeModalCtrl', [
				'$scope', '$rootScope', 'httpRepository', 'pageHelper', 'notificationService', '$filter', '$modalInstance', '$document', 'modalInteraction',
function ($scope, $rootScope, httpRepository, pageHelper, notificationService, $filter, $modalInstance, $document, modalInteraction) {
	$scope.startAutoFocus = true;
	$scope.pageHelper = pageHelper;
	$scope.pageNotification = new notificationService.instance();

	$scope.modalBehavior = new pageHelper.AsyncStateBehavior({
		constructor: function () {
			var instance = this.instance;
			instance.model = {};
			instance.model.domainName = modalInteraction.domainName;
			instance.model.transferId = modalInteraction.transferId;

			instance.activeNotification = new notificationService.instance();

			instance.cancel = function () {
				$modalInstance.dismiss('cancel');
			};

			instance.save = function () {
				this.showNotifications = false;
				if ($scope.modalForm.$valid) {
					instance.asyncStatus(pageHelper.AsyncStatus.Loading);
					httpRepository.domainTransfer.authorizeTransfer(instance.model.transferId, instance.model.authCode, instance.model.domainName).then(function (result) {
						result.sender = "authorize";
						instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
					});
				} else {
					angular.forEach($scope.modalForm.$error.required, function (field) {
						field.$setDirty();
					});
					var validationError = { Msg: ErrorMessageRes.error_FormIsNotValid };
					this.asyncStatus(pageHelper.AsyncStatus.Error, validationError);
				}
			};
		},
		onSuccess: function (params) {
			var instance = this.instance;
			if (params.sender == "authorize") {
				$modalInstance.close(params.Result);
			}
		},
		onActive: function (params) {
			var instance = this.instance;
		},
		onLoading: function (params) {
			var instance = this.instance;
		},
		onError: function (params) {
			var instance = this.instance;
			instance.activeNotification = $scope.pageNotification.alerts.addError(DomainTransferRes.message_AutorizeTransfer_Error, {
				hasClose: true,
				isAutoHide: false
			});
			instance.showNotifications = true;
			instance.asyncStatus(pageHelper.AsyncStatus.Active);
		}

	});

	$document.bind('keydown', function (evt) {
		if (evt.which === 27 && !$scope.modalBehavior.asyncStatus().isDisabled) {
			$scope.modalBehavior.cancel();
		}
	});

	$document.bind('click', function (evt) {
		if (angular.element(evt.target).hasClass("mfp-content") && !$scope.modalBehavior.asyncStatus().isDisabled) {
			$scope.modalBehavior.cancel();
		}
	});

}])
;
app.controller('domainTransferCtrl', [
	'$scope', '$rootScope', 'httpRepository', 'pageHelper', 'notificationService', '$filter', '$modal', 'httpService','domainTransferInService','$location',
	function ($scope, $rootScope, httpRepository, pageHelper, notificationService, $filter, $modal, httpService, domainTransferInService, $location) {
		$scope.pageHelper = pageHelper;
		$scope.setTransferModel = function(serverModel) {
			$scope.transferModel = serverModel;
		}
		
		$scope.pageNotification = $rootScope.pageNotification;

		$scope.pageBehavior = new pageHelper.AsyncStateBehavior({
			constructor: function() {
				var instance = this.instance;

				instance.activeNotification = new notificationService.instance();
				instance.asyncStatus(pageHelper.AsyncStatus.Active);

				instance.authorizeTransfer = function () {
					instance.asyncStatus(pageHelper.AsyncStatus.Loading);
					domainTransferInService.showAuthorizeTransferModal($scope.transferModel.DomainName, $scope.transferModel.TransferId).then(function (modalResult) {
						instance.asyncStatus(pageHelper.AsyncStatus.Success, { sender: "authorizeTransfer", Result: modalResult });
					}, function() {
					});
				};

				instance.refreshStatus = function() {
					instance.asyncStatus(pageHelper.AsyncStatus.Loading);
					httpRepository.domainTransfer.refreshTransferStatus($scope.transferModel.TransferId, $scope.transferModel.DomainName).then(function (result) {
						result.sender = "refreshStatus";
						instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
					});
				}
				instance.resendEmail = function() {
					instance.asyncStatus(pageHelper.AsyncStatus.Loading);
					httpRepository.domainTransfer.resendEmail($scope.transferModel.TransferId).then(function(result) {
						result.sender = "resendEmail";
						instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
					});
				}
				var startNotification = notificationService.getUrlNotificationKey();
				if (startNotification == 's_dts') {
					$scope.pageNotification.stuckNotifications.addSuccess(DomainTransferRes.message_RefreshStatus_Success, { hasClose: true, isAutoHide: true });
				}
			},

			onSuccess: function(params) {
				var instance = this.instance;
				if (params.sender == "refreshStatus") {
					if (params.Result.TransferStatus != $scope.transferModel.TransferStatus) {
						window.location.href = window.location.href + "?notificationKey=s_dts";
					} else {
						instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(DomainTransferRes.message_RefreshStatus_Success, {
							hasClose: true,
							isAutoHide: true
						});
					}
				} else if (params.sender == "authorizeTransfer") {
					$scope.transferModel = params.Result;
					instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(DomainTransferRes.message_AutorizeTransfer_Success, {
						hasClose: true,
						isAutoHide: true
					});
				}
				else if (params.sender == "resendEmail") {
					instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(DomainTransferRes.message_ResendEmail_Success, {
						hasClose: true,
						isAutoHide: true
					});
				}
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
			},
			onActive: function(params) {
				var instance = this.instance;
			},
			onLoading: function(params) {
				var instance = this.instance;
				instance.showLoadPanel = true;
			},
			onError: function(params) {
				var instance = this.instance;
				if (params.sender == "resendEmail") {
					params.Msg = DomainTransferRes.message_ResendEmail_Error;
				}
				else if (params.sender == "refreshStatus") {
					params.Msg = DomainTransferRes.message_RefreshStatus_Error;
				}
				instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
					hasClose: true,
					isAutoHide: true
				});
				instance.asyncStatus(pageHelper.AsyncStatus.Active);
			}
    });

	$scope.transferStatusType = {
		None: 0,
		Pending: 1,
		Cancelled: 2,
		QueuedForTransfer: 3,
		AwaitingEppCode: 4,
		AwaitingEmailConfirmation: 5,
		Done: 6,
		VerifyingDomainContacts:7
	};
}])
;
app.controller('domainTransferGetStartedModalCtrl', [
				'$scope', '$rootScope', 'httpRepository', 'pageHelper', 'notificationService', '$filter', '$modalInstance', '$document', 'modalInteraction',
function ($scope, $rootScope, httpRepository, pageHelper, notificationService, $filter, $modalInstance, $document, modalInteraction) {

	$scope.pageHelper = pageHelper;
    $scope.pageNotification = new notificationService.instance();

    $scope.modalBehavior = new pageHelper.AsyncStateBehavior({
        constructor: function () {
        	var instance = this.instance;

        	instance.model = {};
        	instance.model.domainName = modalInteraction.domainName;        	
            instance.model.transferId = modalInteraction.transferId;
            
	        instance.activeNotification = new notificationService.instance();

	        instance.cancel = function () {
		        $modalInstance.dismiss('cancel');
	        };

	        instance.save = function () {
		        this.showNotifications = false;
		        if ($scope.modalForm.$valid) {
		        	instance.asyncStatus(pageHelper.AsyncStatus.Loading);

		        	httpRepository.domainTransfer.authorizeTransfer(instance.model.transferId, instance.model.authCode).then(function (result) {
		        		result.sender = "authorize";
		        		instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
		        	});

		        } else {
		        	angular.forEach($scope.modalForm.$error.required, function (field) {
		        		field.$setDirty();
		        	});
		        	var validationError = { Msg: ErrorMessageRes.error_FormIsNotValid };
		        	this.asyncStatus(pageHelper.AsyncStatus.Error, validationError);
		        }	       
	        };

        },
        onSuccess: function (params) {
        	var instance = this.instance;
        	if (params.sender == "authorize" ) {
        		$modalInstance.close(instance.model);
	        }
        },

        onActive: function (params) {
            var instance = this.instance;
        },
        onLoading: function (params) {
            var instance = this.instance;
        },
        onError: function (params) {
        	var instance = this.instance;
        	instance.activeNotification = $scope.pageNotification.alerts.addError(params.Msg, {
        		hasClose: true,
        		isAutoHide: false
        	});
        	instance.showNotifications = true;
        	instance.asyncStatus(pageHelper.AsyncStatus.Active);
        }
        
    });

    $document.bind('keydown', function (evt) {
    	if (evt.which === 27 && !$scope.modalBehavior.asyncStatus().isDisabled) {
    		$scope.modalBehavior.cancel();
    	}
    });
    $document.bind('click', function (evt) {
    	if (angular.element(evt.target).hasClass("mfp-content") && !$scope.modalBehavior.asyncStatus().isDisabled) {
    		$scope.modalBehavior.cancel();
    	}
    });

}])
;
app.controller('addDnsRecords', ['$scope', '$modalInstance', 'openModelParameter', 'domainName', 'hostingID', 'hostRecordType', 'httpRepository', 'notificationService', 'pageModelClass', 'domainType','sanitizeHtmlService',
function ($scope, $modalInstance, openModelParameter, domainName, hostingID, hostRecordType, httpRepository, notificationService, pageModelClass, domainType, sanitizeHtmlService) {
    $scope.pageNotification = notificationService.instance();
    $scope.NoSearchOption = { minimumResultsForSearch: -1 };
    $scope.addMoreShowBtn = false;
    $scope.saveChangesBtn = true;
    $scope.domainName = domainName;
    $scope.openmodelparam = openModelParameter;
    $scope.requiredValidation = false;
    $scope.isURLRedirect = false;
    $scope.isNamecheapHosting = false;
    $scope.isSwitchDNSservers = false;
    $scope.hostID = hostingID;
    $scope.isSubDomain = domainType;
    $scope.serviceName = "Other Service";
    $scope.isDDNSModel = false;
    var ParentPageModelClass = pageModelClass;
    //var existingHostcount = hostcount;
    $scope.hostRecordType = hostRecordType;
    $scope.notificationAlertArguments = { isAutoHide: true, hasClose: true }
    $scope.hostPattern = "^@$|^\$|^[*a-zA-Z0-9._-]+$";    
    $scope.destinationURLPattern = "^[A-Za-z0-9!$-~`?/@#%^*&()_+=<>.,';:|\"]*$";  //"^[a-zA-Z0-9.\-_\/.-~:?[]@#!$&'()*+,;=%]*$";
    $scope.ipv6Pattern = "^s*((([0-9A-Fa-f]{1,4}:){7}([0-9A-Fa-f]{1,4}|:))|(([0-9A-Fa-f]{1,4}:){6}(:[0-9A-Fa-f]{1,4}|((25[0-5]|2[0-4]d|1dd|[1-9]?d)(.(25[0-5]|2[0-4]d|1dd|[1-9]?d)){3})|:))|(([0-9A-Fa-f]{1,4}:){5}(((:[0-9A-Fa-f]{1,4}){1,2})|:((25[0-5]|2[0-4]d|1dd|[1-9]?d)(.(25[0-5]|2[0-4]d|1dd|[1-9]?d)){3})|:))|(([0-9A-Fa-f]{1,4}:){4}(((:[0-9A-Fa-f]{1,4}){1,3})|((:[0-9A-Fa-f]{1,4})?:((25[0-5]|2[0-4]d|1dd|[1-9]?d)(.(25[0-5]|2[0-4]d|1dd|[1-9]?d)){3}))|:))|(([0-9A-Fa-f]{1,4}:){3}(((:[0-9A-Fa-f]{1,4}){1,4})|((:[0-9A-Fa-f]{1,4}){0,2}:((25[0-5]|2[0-4]d|1dd|[1-9]?d)(.(25[0-5]|2[0-4]d|1dd|[1-9]?d)){3}))|:))|(([0-9A-Fa-f]{1,4}:){2}(((:[0-9A-Fa-f]{1,4}){1,5})|((:[0-9A-Fa-f]{1,4}){0,3}:((25[0-5]|2[0-4]d|1dd|[1-9]?d)(.(25[0-5]|2[0-4]d|1dd|[1-9]?d)){3}))|:))|(([0-9A-Fa-f]{1,4}:){1}(((:[0-9A-Fa-f]{1,4}){1,6})|((:[0-9A-Fa-f]{1,4}){0,4}:((25[0-5]|2[0-4]d|1dd|[1-9]?d)(.(25[0-5]|2[0-4]d|1dd|[1-9]?d)){3}))|:))|(:(((:[0-9A-Fa-f]{1,4}){1,7})|((:[0-9A-Fa-f]{1,4}){0,5}:((25[0-5]|2[0-4]d|1dd|[1-9]?d)(.(25[0-5]|2[0-4]d|1dd|[1-9]?d)){3}))|:)))(%.+)?s*";
    $scope.ipAddressPattern = "^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$";
    $scope.srvWeightPortValue = 65535;
    $scope.priorityValue = 255;

    if (openModelParameter == 'addNew' || openModelParameter == 'manageAddNew') {
    	if (ParentPageModelClass == "Namecheap BasicDNS" || ParentPageModelClass == "FREE" || ParentPageModelClass == "FREE2") {
            $scope.recordTypeList = [
            { name: 'Select Record Type', value: 'Default' },
            { name: 'A Record', value: 'A' },
            { name: 'AAAA Record', value: 'AAAA' },
            { name: 'CNAME Record', value: 'CNAME' },
            //{ name: 'MX Record', value: 'MX' },            
            { name: 'SRV Record', value: 'SRV' },
            { name: 'TXT Record', value: 'TXT' },
            { name: 'URL Redirect Record', value: 'URL' },
            { name: 'NS Record', value: 'NS' }];
        }
        else {
            $scope.recordTypeList = [
            { name: 'Select Record Type', value: 'Default' },
            { name: 'A Record', value: 'A' },
            { name: 'AAAA Record', value: 'AAAA' },
            { name: 'CNAME Record', value: 'CNAME' },
            //{ name: 'MX Record', value: 'MX' },            
            { name: 'SRV Record', value: 'SRV' },
            { name: 'TXT Record', value: 'TXT' },
            { name: 'URL Redirect Record', value: 'URL' }];
            //{ name: 'NS Record', value: 'NS' }];
        }
    }
    else {
        $scope.recordTypeList = [
            { name: 'Select Record Type', value: 'Default' },
            { name: 'A Record', value: 'A' },
            { name: 'AAAA Record', value: 'AAAA' },
            { name: 'CNAME Record', value: 'CNAME' },
            //{ name: 'MX Record', value: 'MX' },            
            { name: 'SRV Record', value: 'SRV' },
            { name: 'TXT Record', value: 'TXT' },
            { name: 'URL Redirect Record', value: 'URL' },
            { name: 'NS Record', value: 'NS' }];
    }

    $scope.domainRedirectList = [{ name: 'This Domain', value: 'Domain' }, { name: 'SubDomain', value: 'SubDomain' }];
    if (openModelParameter == 'addNew' || openModelParameter == 'edit' || openModelParameter == 'manageAddNew' || openModelParameter == 'addRedirect' || openModelParameter == 'editRedirect') {

    	if (ParentPageModelClass == "Namecheap BasicDNS" || ParentPageModelClass.DnsType == 1 || ParentPageModelClass.DnsType == "NameCheapDefault" || ParentPageModelClass.DnsType == "NameCheapFreeDNS" || ParentPageModelClass == "FREE" || ParentPageModelClass == "FREE2") {
            $scope.domainRedirectTypeList = [{ name: 'Unmasked', value: 'URL' }, { name: 'Masked', value: 'FRAME' }, { name: 'Permanent (301)', value: 'URL301' }];
        }
        else {
            $scope.domainRedirectTypeList = [{ name: 'Unmasked', value: 'URL' }, { name: 'Masked', value: 'FRAME' }];
        }
    }
    $scope.urlLookList = [{ name: 'Both http:// and http://www', value: 'Both' }, { name: 'Only http://', value: '@' }, { name: 'Only http://www', value: 'www' }];
    $scope.timeToLiveList = [{ name: 'Automatic', value: '1799' }, { name: '1 minute', value: '60' }, { name: '5 minutes', value: '300' }, { name: '20 minutes', value: '1200' }, { name: '30 minutes', value: '1800' }, { name: '60 minutes', value: '3600' }];
    $scope.ddnsRecordTypeList = [{ name: 'Use existing records', value: '0' }, { name: 'Add new record', value: '1' }];


    var textFields = {
        recordType: $scope.recordTypeList[0].value, recordName: "", host: "", hostID: "", target: "", ttl: $scope.timeToLiveList[0].value, ipAddress: "", ipv6: "", nameserver: "", service: "", protocol: "", priority: "", weight: "", port: "", value: "",
        domainToRedirect: $scope.domainRedirectList[0].value,
        subDomain: "", urlLook: $scope.urlLookList[0].value, destinationURL: "", domainRedirectType: "", metaTitle: "", metaDescription: "", metaKeyword: "", metaFaviconURL: "", mailServer: "", isMetaTages: false, isDynamicDNS: false, isURLTypeDouble: false,
        ddnsRecordType: $scope.ddnsRecordTypeList[0].value, newHostCount: 0, applactionTitel: "", isCancel: false, isResultSuccess: false
    };

    $scope.textFields = textFields;

    var RecordFields =
        {
            isRecordTypeDropDownVisible: false, isRecordTypeLableVisible: false, isRecordNameVisible: false, isHostVisible: false, isTargetVisible: false, isTTlVisible: false, isIPAddressVisible: false, isDynamicDNSVisible: false, isIPv6Visible: false,
            isNameServerVisible: false, isServiceVisible: false, isProtocolVisible: false, isPriorityVisible: false, isWeightVisible: false, isPortVisible: false, isValueVisible: false, isDomainToRedirectVisible: false, isSubDomainVisible: false,
            isURlLookVisible: false, isDestinationURLVisible: false, isRedirectTypeVisible: false, isMetaTagesVisible: false, isTitleVisible: false, isDescriptionVisible: false, isKeywordVisible: false, isFaviconURLVisible: false,
            isMailServerVisible: false, isDDnsDropDownVisible: false, isDDnsExistingRecordVisible: false, isEmailSettingTxtHostlbl: false
        };

    $scope.RecordFields = RecordFields;

    $scope.disableDDnsChangeFun = function (hostid) {
        if (hostid != '') {
            $scope.textFields.hostID = hostid;
        }
    };

    $scope.cancelClick = function () {
        console.log("Dismiss Modal with model : " + $scope.modalpopupcontrollerValue);
        if ($scope.isNamecheapHosting) {
            textFields.isCancel = true;
        }
        $modalInstance.close($scope.textFields);
    };

    $scope.saveRecords = function () {
        //$('span.cont-msg.error').show();
        $scope.requiredValidation = true;
        $scope.textFields.isCancel = false;
        var isformValid = $scope.frmadvancedDnsAddRecords.$valid;
        $scope.pageNotification.alerts.clear();
        if (isformValid) {
            if ($scope.textFields.recordType == $scope.recordTypeList[0].value && (openModelParameter == 'addNew' || openModelParameter == 'manageAddNew')) {
                $scope.pageNotification.alerts.addError('Please Choose Record Type', $scope.notificationAlertArguments)
                $scope.textFields.isCancel = true;
            }
            else {
                $scope.showLoadPanel = true;
                if ($scope.textFields.recordType == $scope.recordTypeList[6].value) {
                    if ($scope.textFields.domainRedirectType == $scope.domainRedirectTypeList[1].value) {
                        $scope.textFields.recordType = $scope.domainRedirectTypeList[1].value;
                    }
                    else if ($scope.textFields.domainRedirectType == "URL301") {
                        $scope.textFields.recordType = $scope.domainRedirectTypeList[2].value;
                    }
                    else {
                        $scope.textFields.recordType = $scope.textFields.recordType;
                    }

                    $scope.urlLookFun($scope.textFields.urlLook);
                }
                if ($scope.textFields.recordName == '')
                { $scope.textFields.recordName = $scope.textFields.recordType + ' Record'; }

                $scope.isAddNewProcess = false;
                if (openModelParameter == 'addNew' || openModelParameter == 'addEmailSetting' || openModelParameter == 'manageAddNew' || openModelParameter == 'addRedirect' || openModelParameter == 'addRedirectinner') {
                    $scope.isAddNewProcess = true;
                }

                if (openModelParameter == 'AddDDNS') {
                    if ($scope.ddnsRecordTypeList[0].value == $scope.textFields.ddnsRecordType) {
                        $scope.isAddNewProcess = false;
                        var multipleDDNs = '';
                        var isMultipleDDNs = angular.isObject($scope.textFields.hostID);
                        if (isMultipleDDNs) {
                            multipleDDNs = $scope.textFields.hostID.join(',');
                        }
                        else {
                            if ($scope.textFields.hostID == '0') {
                                $scope.textFields.hostID = '';
                            }
                            multipleDDNs = $scope.textFields.hostID;
                        }
                        httpRepository.domainDns.enableDDNSHostRecord(multipleDDNs, $scope.domainName).then(function (result) {
                            if (result.Error) {
                                $scope.showLoadPanel = false;
                                $scope.pageNotification.alerts.addError(sanitizeHtmlService(result.Msg), $scope.notificationAlertArguments)
                                $scope.textFields.isCancel = true;
                            }
                            else {
                                $scope.showLoadPanel = false;
                                $scope.cancelClick();
                                $scope.pageNotification.stuckNotifications.addSuccess(result.Msg, {
                                    hasClose: true,
                                    isAutoHide: true
                                });
                            }
                        });
                    }
                    else {
                        $scope.isAddNewProcess = true;
                        httpRepository.domainDns.addHostRecord($scope.textFields, $scope.domainName, $scope.isAddNewProcess).then(function (result) {
                            if (result.Error) {
                                $scope.showLoadPanel = false;
                                $scope.pageNotification.alerts.addError(sanitizeHtmlService(result.Msg), $scope.notificationAlertArguments)
                                $scope.textFields.isCancel = true;
                            }
                            else {
                                if (openModelParameter == 'addNew' || openModelParameter == 'manageAddNew') {
                                    $scope.showLoadPanel = false;
                                    $scope.saveChangesBtn = false;
                                    $scope.addMoreShowBtn = true;
                                    $scope.pageNotification.alerts.addSuccess(result.Msg, $scope.notificationAlertArguments)
                                }
                                else {
                                    $scope.showLoadPanel = false;
                                    $scope.cancelClick();
                                }
                                if ($scope.removeParkingRecord != undefined && $scope.removeParkingRecord == true) {
                                    if (hostIDToRemove != '') {
                                        httpRepository.domainDns.removeHostRecord(hostIDToRemove, typeToRemove, $scope.domainName).then(function (result) {
                                        });
                                    }
                                }
                            }
                        });
                    }
                }
                else {
                    httpRepository.domainDns.addHostRecord($scope.textFields, $scope.domainName, $scope.isAddNewProcess).then(function (result) {
                        if (result.Error) {
                            $scope.showLoadPanel = false;
                            $scope.pageNotification.alerts.addError(sanitizeHtmlService(result.Msg), $scope.notificationAlertArguments)
                            $scope.textFields.isCancel = true;
                        }
                        else {
                            if (openModelParameter == 'addNew' || openModelParameter == 'manageAddNew') {
                                $scope.showLoadPanel = false;
                                $scope.saveChangesBtn = false;
                                $scope.addMoreShowBtn = true;
                                //existingHostcount = existingHostcount + 1;
                                //$scope.textFields.newHostCount = existingHostcount;
                                $scope.pageNotification.alerts.addSuccess(result.Msg, $scope.notificationAlertArguments)
                            }
                            else {
                                $scope.showLoadPanel = false;
                                $scope.textFields.isResultSuccess = true;
                                $scope.cancelClick();
                            }
                            if ($scope.removeParkingRecord != undefined && $scope.removeParkingRecord == true) {
                                if (hostIDToRemove != '') {
                                    httpRepository.domainDns.removeHostRecord(hostIDToRemove, typeToRemove, $scope.domainName).then(function (result) {
                                    });
                                }
                            }
                        }
                    });
                }
            }

        }
    };

    $scope.addMoreRecords = function () {
        $scope.pageNotification.alerts.clear();
        $scope.addMoreShowBtn = false;
        $scope.saveChangesBtn = true;
        $scope.textclear();
        RecordFields.isRecordTypeDropDownVisible = true;
        $scope.textFields.recordType = $scope.recordTypeList[0].name;
    };

    $scope.timeToLiveFun = function (ttl) {
        $scope.textFields.ttl = ttl;
    };

    $scope.domainRedirectFun = function (redirect) {
        if (redirect != null) {
            if (redirect == $scope.domainRedirectList[1].value) {
                $scope.textFields.subDomain = "";
                $scope.textFields.domainToRedirect = $scope.domainRedirectList[1].value;
                RecordFields.isSubDomainVisible = true;
            }
            else {
                $scope.textFields.domainToRedirect = $scope.domainRedirectList[0].value;
                RecordFields.isSubDomainVisible = false;
                var splitValue = ($scope.textFields.host.split('.'));
                if (splitValue != null) {
                    if (splitValue[0] == '@') {
                        $scope.textFields.host = splitValue[0];
                    }
                    else if (splitValue[0] == 'www') {
                        $scope.textFields.host = splitValue[0];
                    }
                    else {
                        $scope.textFields.host = $scope.urlLookList[1].value;
                    }


                }


            }
        }
    };

    $scope.urlLookFun = function (urlLookType) {
        $scope.textFields.isURLTypeDouble = false;
        if ($scope.textFields.domainToRedirect == $scope.domainRedirectList[1].value) {
            if ($scope.textFields.urlLook == $scope.urlLookList[1].value) {
                $scope.textFields.host = $scope.textFields.subDomain;
                $scope.textFields.isURLTypeDouble = false;
            }
            else if ($scope.textFields.urlLook == $scope.urlLookList[2].value) {
                $scope.textFields.host = $scope.urlLookList[2].value + '.' + $scope.textFields.subDomain;
                $scope.textFields.isURLTypeDouble = false;
            }
            else {
                $scope.textFields.host = $scope.urlLookList[2].value + '.' + $scope.textFields.subDomain;
                $scope.textFields.isURLTypeDouble = true;
            }
        }
        else {

            if ($scope.textFields.urlLook == $scope.urlLookList[1].value) {
                $scope.textFields.host = $scope.urlLookList[1].value;
                $scope.textFields.applactionTitel = "URL Forwarding";
                $scope.textFields.isURLTypeDouble = false;
            }
            else if ($scope.textFields.urlLook == $scope.urlLookList[2].value) {
                $scope.textFields.host = $scope.urlLookList[2].value;
                $scope.textFields.isURLTypeDouble = false;
            }
            else {
                $scope.textFields.host = $scope.urlLookList[1].value + '.' + $scope.urlLookList[2].value;
                $scope.textFields.applactionTitel = "URL Forwarding";
                $scope.textFields.isURLTypeDouble = true;
            }
        }

    };

    $scope.changeDDnsRecordType = function (useDDnsType) {

        if (useDDnsType == $scope.ddnsRecordTypeList[1].value) {
            $scope.requiredValidation = false;
            $scope.textFields.recordType = $scope.recordTypeList[1].value;
            RecordFields.isDDnsExistingRecordVisible = false;
            RecordFields.isRecordNameVisible = true;
            RecordFields.isHostVisible = true;
            RecordFields.isIPAddressVisible = true;
            RecordFields.isTTlVisible = true;
        }
        else {
            if ($scope.getDisableDDNSHostList[0].Host == "") {
                RecordFields.isDDnsExistingRecordVisible = false;
            }
            else {
                RecordFields.isDDnsExistingRecordVisible = true;
            }
            RecordFields.isRecordNameVisible = false;
            RecordFields.isHostVisible = false;
            RecordFields.isIPAddressVisible = false;
            RecordFields.isTTlVisible = false;
            RecordFields.isDynamicDNSVisible = false;
        }

    };

    $scope.redirectTypeFun = function (RedirectType) {
        if (RedirectType != null) {
            if (RedirectType == 'FRAME') {
                $scope.textFields.domainRedirectType = $scope.domainRedirectTypeList[1].value;
                $scope.textFields.isMetaTages = false;
                RecordFields.isMetaTagesVisible = true;
            }
            else if (RedirectType == 'URL301') {
                $scope.textFields.domainRedirectType = $scope.domainRedirectTypeList[2].value;
                $scope.textFields.isMetaTages = false;
                $scope.chkMetaTagFun();
                RecordFields.isMetaTagesVisible = false;
            }
            else {
                $scope.textFields.domainRedirectType = $scope.domainRedirectTypeList[0].value;
                $scope.textFields.isMetaTages = false;
                $scope.chkMetaTagFun();
                RecordFields.isMetaTagesVisible = false;
            }
        }
    };

    $scope.chkMetaTagFun = function () {
        if ($scope.textFields.isMetaTages) {
            RecordFields.isTitleVisible = true;
            RecordFields.isDescriptionVisible = true;
            RecordFields.isKeywordVisible = true;
            RecordFields.isFaviconURLVisible = false;
            if (openModelParameter == 'addNew' || openModelParameter == 'edit' || openModelParameter == 'manageAddNew' || openModelParameter == 'addRedirect' || openModelParameter == 'editRedirect' || openModelParameter == 'addRedirectinner') {
            	if (ParentPageModelClass == "Namecheap BasicDNS" || ParentPageModelClass.DnsType == 1 || ParentPageModelClass.DnsType == "NameCheapDefault" || ParentPageModelClass.DnsType == "NameCheapFreeDNS" || ParentPageModelClass == "FREE" || ParentPageModelClass == "FREE2") {
                    RecordFields.isFaviconURLVisible = true;
                }
            }

        }
        else {
            RecordFields.isTitleVisible = false;
            RecordFields.isDescriptionVisible = false;
            RecordFields.isKeywordVisible = false;
            RecordFields.isFaviconURLVisible = false;
        }
    };

    //$scope.switchDNSservers = function () {
    //    $scope.isSwitchDNSservers = true;
    //    $scope.isNamecheapHosting = false;
    //    $scope.IsHostRecordLocked = false;
    //    $scope.AtWwwwHasOtherRecordTypeSet = false;
    //};

    $scope.setDefaultDNS = function (defaultDns) {
        $scope.frmadvancedDnsAddRecords.chkSwitchDns.$setDirty();
        if (!$scope.frmadvancedDnsAddRecords.$invalid) {
            $scope.showLoadPanel = true;
            var EditDomainDNS =
                {
                    NameServers: defaultDns,
                    DNSType: 'NCDefault'
                }
            httpRepository.domainDns.setNameServers(EditDomainDNS, $scope.domainName).then(function (result) {
                if (result.Error) {
                    $scope.showLoadPanel = false;
                    $scope.pageNotification.alerts.addError(sanitizeHtmlService(result.Msg), $scope.notificationAlertArguments)

                }
                else {
                    $scope.showLoadPanel = false;
                    $scope.saveChangesBtn = true;
                    $scope.isURLRedirect = false;
                    $scope.isSwitchDNSservers = false;
                    $scope.isNamecheapHosting = false;
                    $scope.IsHostRecordLocked = false;
                    $scope.AtWwwwHasOtherRecordTypeSet = false;
                    $scope.textclear();
                    $scope.textFields.recordType = $scope.recordTypeList[6].value;
                    $scope.urlLookFun($scope.textFields.urlLook);
                    RecordFields.isRecordTypeDropDownVisible = false;
                    RecordFields.isRecordNameVisible = true;
                    RecordFields.isDomainToRedirectVisible = true;
                    RecordFields.isURlLookVisible = true;
                    RecordFields.isDestinationURLVisible = true;
                    RecordFields.isRedirectTypeVisible = true;
                    $scope.domainRedirectTypeList = [{ name: 'Unmasked', value: 'URL' }, { name: 'Masked', value: 'FRAME' }, { name: 'Permanent (301)', value: 'URL301' }];
                }


            });
        }

    };

    $scope.UpdateService = function (hostIDList, recordTypes) {
        $scope.frmadvancedDnsAddRecords.chkSwitchDns.$setDirty();
        $scope.textFields.isCancel = false;
        if (!$scope.frmadvancedDnsAddRecords.$invalid) {
            $scope.showLoadPanel = true;
            httpRepository.domainDns.removeHostRecord(hostIDList, recordTypes, $scope.domainName).then(function (result) {
                if (result.Error) {
                    $scope.showLoadPanel = false;
                    $scope.pageNotification.alerts.addError(sanitizeHtmlService(result.Msg), $scope.notificationAlertArguments)
                }
                else {
                    $scope.showLoadPanel = false;
                    $scope.isURLRedirect = true;
                    openModelParameter = 'addRedirectinner';
                    $modalInstance.close($scope.textFields);
                }
            });
        }

    };

    $scope.textclear = function () {
        RecordFields.isRecordTypeDropDownVisible = false;
        RecordFields.isRecordTypeLableVisible = false;
        RecordFields.isRecordNameVisible = false;
        RecordFields.isHostVisible = false;
        RecordFields.isTargetVisible = false;
        RecordFields.isTTlVisible = false;
        RecordFields.isIPAddressVisible = false;
        RecordFields.isDynamicDNSVisible = false;
        RecordFields.isIPv6Visible = false;
        RecordFields.isNameServerVisible = false;
        RecordFields.isServiceVisible = false;
        RecordFields.isProtocolVisible = false;
        RecordFields.isPriorityVisible = false;
        RecordFields.isWeightVisible = false;
        RecordFields.isPortVisible = false;
        RecordFields.isValueVisible = false;
        RecordFields.isDomainToRedirectVisible = false;
        RecordFields.isSubDomainVisible = false;
        RecordFields.isURlLookVisible = false;
        RecordFields.isDestinationURLVisible = false;
        RecordFields.isRedirectTypeVisible = false;
        RecordFields.isMetaTagesVisible = false;
        RecordFields.isTitleVisible = false;
        RecordFields.isDescriptionVisible = false;
        RecordFields.isKeywordVisible = false;
        RecordFields.isFaviconURLVisible = false;
        RecordFields.isMailServerVisible = false;
        RecordFields.isDDnsDropDownVisible = false;
        RecordFields.isDDnsExistingRecordVisible = false;
        RecordFields.isEmailSettingTxtHostlbl = false;
        $scope.requiredValidation = false;
        $scope.isDDNSModel = false;
        $scope.textFields.recordType = $scope.recordTypeList[0].value;
        $scope.textFields.recordName = "";
        $scope.textFields.host = "";
        $scope.textFields.ipAddress = "";
        $scope.textFields.isDynamicDNS = false;
        $scope.textFields.target = "";
        $scope.textFields.ttl = $scope.timeToLiveList[0].value;
        $scope.textFields.ipv6 = "";
        $scope.textFields.nameserver = "";
        $scope.textFields.service = "";
        $scope.textFields.protocol = "";
        $scope.textFields.priority = "";
        $scope.textFields.weight = "";
        $scope.textFields.port = "";
        $scope.textFields.value = "";
        $scope.textFields.domainToRedirect = $scope.domainRedirectList[0].value;
        $scope.textFields.subDomain = "";
        $scope.textFields.urlLook = $scope.urlLookList[0].value;
        $scope.textFields.domainRedirectType = "";
        $scope.textFields.isMetaTages = false;
        $scope.textFields.destinationURL = "";
        $scope.textFields.metaTitle = "";
        $scope.textFields.metaDescription = "";
        $scope.textFields.metaKeyword = "";
        $scope.textFields.metaFaviconURL = "";
        $scope.textFields.mailServer = "";
        $scope.textFields.isURLTypeDouble = false;
        $scope.textFields.ddnsRecordType = $scope.ddnsRecordTypeList[0].value;
        $scope.textFields.applactionTitel = "";
        $scope.textFields.isResultSuccess = false;
        $scope.textFields.isCancel = false;
        //textFields.newHostCount = 0;
    };

    $scope.recordTypeChange = function (recordType, funType) {
        //$('span.cont-msg.error').hide();
        $scope.requiredValidation = false;
        if (recordType == "Default") {
            $scope.textclear();
            if (funType == 'New') {
                RecordFields.isRecordTypeDropDownVisible = true;
            }
        }
        else if (recordType == "A") {
            if (funType == 'New') {
                $scope.textclear();
                $scope.textFields.recordType = $scope.recordTypeList[1].value;
                RecordFields.isRecordTypeDropDownVisible = true;
            }
            else {
                $scope.showRecordType = $scope.recordTypeList[1].name;
                RecordFields.isRecordTypeLableVisible = true;
            }
            RecordFields.isRecordNameVisible = true;
            RecordFields.isHostVisible = true;
            RecordFields.isIPAddressVisible = true;
            RecordFields.isTTlVisible = true;
            RecordFields.isDynamicDNSVisible = true;
        }
        else if (recordType == "AAAA") {
            if (funType == 'New') {
                $scope.textclear();
                $scope.textFields.recordType = $scope.recordTypeList[2].value;
                RecordFields.isRecordTypeDropDownVisible = true;
            }
            else {
                RecordFields.isRecordTypeLableVisible = true;
                $scope.showRecordType = $scope.recordTypeList[2].name;
            }
            RecordFields.isRecordNameVisible = true;
            RecordFields.isHostVisible = true;
            RecordFields.isIPv6Visible = true;
            RecordFields.isTTlVisible = true;
        }
        else if (recordType == "CNAME") {
            if (funType == 'New') {
                $scope.textclear();
                $scope.textFields.recordType = $scope.recordTypeList[3].value;
                RecordFields.isRecordTypeDropDownVisible = true;
            }
            else {
                RecordFields.isRecordTypeLableVisible = true;
                $scope.showRecordType = $scope.recordTypeList[3].name;
            }
            RecordFields.isRecordNameVisible = true;
            RecordFields.isHostVisible = true;
            RecordFields.isTargetVisible = true;
            RecordFields.isTTlVisible = true;
        }
            //else if (recordType == "MX") {
            //    if (funType == 'New') {
            //        $scope.textclear();
            //        $scope.textFields.recordType = $scope.recordTypeList[4].value;
            //        RecordFields.isRecordTypeDropDownVisible = true;
            //    }
            //    else {
            //        $scope.showRecordType = "MX Record";
            //        RecordFields.isRecordTypeLableVisible = true;                    
            //    }
            //    RecordFields.isRecordNameVisible = true;
            //    RecordFields.isHostVisible = true;
            //    RecordFields.isMailServerVisible = true;
            //    RecordFields.isPriorityVisible = true;
            //    RecordFields.isTTlVisible = true;
            //}
        else if (recordType == "SRV") {
            if (funType == 'New') {
                $scope.textclear();
                $scope.textFields.recordType = $scope.recordTypeList[4].value;
                RecordFields.isRecordTypeDropDownVisible = true;
            }
            else {
                RecordFields.isRecordTypeLableVisible = true;
                $scope.showRecordType = $scope.recordTypeList[4].name;
            }
            RecordFields.isRecordNameVisible = true;
            RecordFields.isServiceVisible = true;
            RecordFields.isProtocolVisible = true;
            RecordFields.isPriorityVisible = true;
            RecordFields.isWeightVisible = true;
            RecordFields.isPortVisible = true;
            RecordFields.isTargetVisible = true;
            RecordFields.isTTlVisible = true;
        }
        else if (recordType == "TXT") {
            if (funType == 'New') {
                $scope.textclear();
                $scope.textFields.recordType = $scope.recordTypeList[5].value;
                RecordFields.isRecordTypeDropDownVisible = true;
            }
            else {
                RecordFields.isRecordTypeLableVisible = true;
                $scope.showRecordType = $scope.recordTypeList[5].name;
            }
            RecordFields.isRecordNameVisible = true;
            RecordFields.isHostVisible = true;
            RecordFields.isValueVisible = true;
            RecordFields.isTTlVisible = true;
        }
        else if (recordType == "URL") {
            $scope.urlLookFun($scope.textFields.urlLook);
            if (funType == 'New') {
                $scope.textclear();
                $scope.textFields.recordType = $scope.recordTypeList[6].value;
                $scope.textFields.domainToRedirect = $scope.domainRedirectList[0].value;
                RecordFields.isRecordTypeDropDownVisible = true;
                RecordFields.isURlLookVisible = true;
            }
            else {
                $scope.showRecordType = $scope.recordTypeList[6].name;
                if ($scope.textFields.domainToRedirect == $scope.domainRedirectList[1].value) {
                    RecordFields.isSubDomainVisible = true;
                }
                RecordFields.isRecordTypeLableVisible = true;
                RecordFields.isURlLookVisible = false;
            }
            RecordFields.isRecordNameVisible = true;
            RecordFields.isDomainToRedirectVisible = true;

            RecordFields.isDestinationURLVisible = true;
            RecordFields.isRedirectTypeVisible = true;
        }
        else if (recordType == "NS") {
            if (funType == 'New') {
                $scope.textclear();
                $scope.textFields.recordType = $scope.recordTypeList[7].value;
                RecordFields.isRecordTypeDropDownVisible = true;
            }
            else {
                $scope.showRecordType = $scope.recordTypeList[7].name;
                RecordFields.isRecordTypeLableVisible = true;
            }
            RecordFields.isRecordNameVisible = true;
            RecordFields.isHostVisible = true;
            RecordFields.isNameServerVisible = true;
            RecordFields.isTTlVisible = true;
        }
        else {
            $scope.textclear();
        }
    };



    if (openModelParameter == 'addRedirect') {
        $scope.textFields.isCancel = true;
        if (ParentPageModelClass != null && ParentPageModelClass != '' && ParentPageModelClass != undefined) {

            if (ParentPageModelClass.IsUsingNamecheapHosting) {
                $scope.IsHostRecordLocked = false;
                $scope.AtWwwwHasOtherRecordTypeSet = false;
                $scope.isURLRedirect = true;
                $scope.isNamecheapHosting = true;
                $scope.isSwitchDNSservers = false;
            }
            else if (ParentPageModelClass.IsUsingFreeDns || ParentPageModelClass.DnsType == "Enom" || ParentPageModelClass.DnsType == "NameCheapDefault" || ParentPageModelClass.DnsType == "NameCheapFreeDNS") {
                if (!ParentPageModelClass.IsHostRecordLocked && !ParentPageModelClass.AtWwwwHasOtherRecordTypeSet) {
                    $scope.isURLRedirect = false;
                    var hostIDToRemove = '';
                    var typeToRemove = '';
                    for (i = 0; i < ParentPageModelClass.HostList.length; i++) {
                        if ((ParentPageModelClass.HostList[i].Name == '@' && ParentPageModelClass.HostList[i].Type == 'URL' && ParentPageModelClass.HostList[i].Address.indexOf($scope.domainName) >= 0) || (ParentPageModelClass.HostList[i].Name.toUpperCase() == 'WWW' && ParentPageModelClass.HostList[i].Type.toUpperCase() == 'CNAME' && ParentPageModelClass.HostList[i].Address == "parkingpage.namecheap.com.")) {
                            if (hostIDToRemove == '') {
                                hostIDToRemove = ParentPageModelClass.HostList[i].HostId;
                            }
                            else {
                                hostIDToRemove = hostIDToRemove + ',' + ParentPageModelClass.HostList[i].HostId;
                            }

                            if (typeToRemove == '') {
                                typeToRemove = ParentPageModelClass.HostList[i].Type;
                            }
                            else {
                                typeToRemove = typeToRemove + ',' + ParentPageModelClass.HostList[i].Type;
                            }
                            $scope.removeParkingRecord = true;
                        }
                    }
                    openModelParameter = 'addRedirectinner';
                }
                else {
                    var hostIds = '';
                    var recordType = '';
                    for (i = 0; i < ParentPageModelClass.HostList.length; i++) {
                        if ((ParentPageModelClass.HostList[i].Name == '@' || ParentPageModelClass.HostList[i].Name == 'www') && (ParentPageModelClass.HostList[i].Type != "URL" && ParentPageModelClass.HostList[i].Type != "FRAME" && ParentPageModelClass.HostList[i].Type != "URL301")) {
                            hostIds = hostIds + ',' + ParentPageModelClass.HostList[i].HostId;
                            recordType = recordType + ',' + ParentPageModelClass.HostList[i].Type;
                            if (ParentPageModelClass.HostList[i].AssociatedAppTitle != null && ParentPageModelClass.HostList[i].AssociatedAppTitle != undefined && ParentPageModelClass.HostList[i].AssociatedAppTitle != "") {
                                if (ParentPageModelClass.HostList[i].AssociatedAppTitle == "FWD") {
                                    ParentPageModelClass.HostList[i].AssociatedAppTitle = "Email Forwading";
                                }
                                if ($scope.serviceName != "") {
                                    $scope.serviceName = $scope.serviceName + '/' + ParentPageModelClass.HostList[i].AssociatedAppTitle;
                                }
                                else {
                                    $scope.serviceName = ParentPageModelClass.HostList[i].AssociatedAppTitle;
                                }

                            }
                            if (ParentPageModelClass.HostList[i].AssociatedAppTitle == "Email Forwading") {
                                ParentPageModelClass.HostList[i].AssociatedAppTitle = "FWD";
                            }
                        }

                    }
                    $scope.hostIDList = hostIds != '' ? hostIds.slice(1) : 0;
                    $scope.recordTypes = recordType != '' ? recordType.slice(1) : 0;
                    $scope.isNamecheapHosting = false;
                    $scope.isSwitchDNSservers = false;
                    $scope.IsHostRecordLocked = ParentPageModelClass.IsHostRecordLocked;
                    $scope.AtWwwwHasOtherRecordTypeSet = ParentPageModelClass.AtWwwwHasOtherRecordTypeSet;
                    $scope.isURLRedirect = true;

                }
            }
            else {
                $scope.IsHostRecordLocked = false;
                $scope.AtWwwwHasOtherRecordTypeSet = false;
                $scope.isNamecheapHosting = false;
                $scope.isSwitchDNSservers = true;
                $scope.isURLRedirect = true;

            }
        }
    }

    if (openModelParameter == 'addNew' || openModelParameter == 'edit' || openModelParameter == 'manageAddNew') {
        if (openModelParameter == 'edit') {
            $scope.showLoadPanel = true;
            $scope.textFields.isCancel = true;
            httpRepository.domainDns.editHostRecord($scope.hostID, $scope.domainName).then(function (result) {
                if (result.Error) {
                    $scope.showLoadPanel = false;
                    $scope.saveChangesBtn = false;
                    $scope.pageNotification.alerts.addError(sanitizeHtmlService(result.Msg), $scope.notificationAlertArguments)
                }
                else {
                    $scope.showLoadPanel = false;
                    $scope.textFields = result.Result;
                    $scope.textFields.hostID = $scope.hostID;


                    $scope.recordTypeChange($scope.textFields.recordType, 'edit');
                    if ($scope.textFields.recordType == $scope.recordTypeList[6].value) {
                        if ($scope.textFields.host == $scope.urlLookList[1].value) {

                            $scope.textFields.urlLook = $scope.urlLookList[1].value;
                            if ($scope.textFields.domainRedirectType == $scope.domainRedirectTypeList[1].value) {
                                if ($scope.textFields.isMetaTages) {
                                    RecordFields.isMetaTagesVisible = true;
                                    RecordFields.isTitleVisible = true;
                                    RecordFields.isKeywordVisible = true;
                                    RecordFields.isDescriptionVisible = true;
                                    RecordFields.isFaviconURLVisible = false;
                                    if (openModelParameter == 'addNew' || openModelParameter == 'edit' || openModelParameter == 'manageAddNew' || openModelParameter == 'addRedirect' || openModelParameter == 'editRedirect') {
                                    	if (ParentPageModelClass == "Namecheap BasicDNS" || ParentPageModelClass.DnsType == 1 || ParentPageModelClass.DnsType == "NameCheapDefault" || ParentPageModelClass.DnsType == "NameCheapFreeDNS" || ParentPageModelClass == "FREE" || ParentPageModelClass == "FREE2") {
                                            RecordFields.isFaviconURLVisible = true;
                                        }
                                    }
                                    $scope.textFields.metaTitle = result.Result.metaTitle;
                                    $scope.textFields.metakey = result.Result.metakey;
                                    $scope.textFields.metaDescription = result.Result.metaDescription;
                                    $scope.textFields.metaFaviconURL = result.Result.metaFaviconURL;
                                }
                                else {
                                    RecordFields.isMetaTagesVisible = true;
                                }
                            }
                            else {
                                RecordFields.isMetaTagesVisible = false;
                            }
                        }
                        else if ($scope.textFields.host == $scope.urlLookList[2].value) {

                            $scope.textFields.urlLook = $scope.urlLookList[2].value;
                            if ($scope.textFields.domainRedirectType == $scope.domainRedirectTypeList[1].value) {
                                if ($scope.textFields.isMetaTages) {
                                    RecordFields.isMetaTagesVisible = true;
                                    RecordFields.isTitleVisible = true;
                                    RecordFields.isKeywordVisible = true;
                                    RecordFields.isDescriptionVisible = true;
                                    RecordFields.isFaviconURLVisible = false;
                                    if (openModelParameter == 'addNew' || openModelParameter == 'edit' || openModelParameter == 'manageAddNew' || openModelParameter == 'addRedirect' || openModelParameter == 'editRedirect') {
                                    	if (ParentPageModelClass == "Namecheap BasicDNS" || ParentPageModelClass.DnsType == 1 || ParentPageModelClass.DnsType == "NameCheapDefault" || ParentPageModelClass.DnsType == "NameCheapFreeDNS" || ParentPageModelClass == "FREE" || ParentPageModelClass == "FREE2") {
                                            RecordFields.isFaviconURLVisible = true;
                                        }
                                    }
                                    $scope.textFields.metaTitle = result.Result.metaTitle;
                                    $scope.textFields.metakey = result.Result.metakey;
                                    $scope.textFields.metaDescription = result.Result.metaDescription;
                                    $scope.textFields.metaFaviconURL = result.Result.metaFaviconURL;
                                }
                                else {
                                    RecordFields.isMetaTagesVisible = true;
                                }
                            }
                            else {
                                RecordFields.isMetaTagesVisible = false;
                            }

                        }
                        else if ($scope.textFields.host == "@.www") {
                            $scope.textFields.urlLook = $scope.urlLookList[0].value;
                            $scope.textFields.domainToRedirect = $scope.domainRedirectList[0].value;
                            if ($scope.textFields.domainRedirectType == $scope.domainRedirectTypeList[1].value) {
                                if ($scope.textFields.isMetaTages) {
                                    RecordFields.isMetaTagesVisible = true;
                                    RecordFields.isTitleVisible = true;
                                    RecordFields.isKeywordVisible = true;
                                    RecordFields.isDescriptionVisible = true;
                                    RecordFields.isFaviconURLVisible = false;
                                    if (openModelParameter == 'addNew' || openModelParameter == 'edit' || openModelParameter == 'manageAddNew' || openModelParameter == 'addRedirect' || openModelParameter == 'editRedirect') {
                                    	if (ParentPageModelClass == "Namecheap BasicDNS" || ParentPageModelClass.DnsType == 1 || ParentPageModelClass.DnsType == "NameCheapDefault" || ParentPageModelClass.DnsType == "NameCheapFreeDNS" || ParentPageModelClass == "FREE" || ParentPageModelClass == "FREE2") {
                                            RecordFields.isFaviconURLVisible = true;
                                        }
                                    }
                                    $scope.textFields.metaTitle = result.Result.metaTitle;
                                    $scope.textFields.metakey = result.Result.metakey;
                                    $scope.textFields.metaDescription = result.Result.metaDescription;
                                    $scope.textFields.metaFaviconURL = result.Result.metaFaviconURL;
                                }
                                else {
                                    RecordFields.isMetaTagesVisible = true;
                                }
                            }
                            else {
                                RecordFields.isMetaTagesVisible = false;
                            }
                        }
                    }
                }
            });
        }
        else {
            RecordFields.isRecordTypeDropDownVisible = true;
            $scope.recordTypeChange('Default', 'New');
        }
    }
    else if (openModelParameter == 'addEmailSetting') {
        $scope.textclear();
        $scope.textFields.recordType = $scope.recordTypeList[5].value;
        if (ParentPageModelClass != '0') {
            if (ParentPageModelClass.FriendlyName == null) {
                $scope.textFields.recordName = 'CName1';
            }
            else {
                $scope.textFields.recordName = ParentPageModelClass.FriendlyName;
            }
            $scope.textFields.host = ParentPageModelClass.Host;
            $scope.textFields.value = ParentPageModelClass.Address;
            $scope.textFields.ttl = '1799';
            $scope.textFields.applactionTitel = ParentPageModelClass.ProviderSubType;
            RecordFields.isRecordTypeDropDownVisible = false;
            RecordFields.isRecordNameVisible = true;
            RecordFields.isHostVisible = true;
            RecordFields.isEmailSettingTxtHostlbl = true;
            RecordFields.isValueVisible = true;
            RecordFields.isTTlVisible = true;
        }
        else {
            RecordFields.isRecordNameVisible = false;
            RecordFields.isHostVisible = false;
            RecordFields.isEmailSettingTxtHostlbl = false;
            RecordFields.isValueVisible = false;
            RecordFields.isTTlVisible = false;
            $scope.saveChangesBtn = false;
        }

    }
    else if (openModelParameter == 'editEmailSetting') {
        $scope.showLoadPanel = true;
        httpRepository.domainDns.editHostRecord($scope.hostID, $scope.domainName).then(function (result) {
            $scope.showLoadPanel = false;
            if (result.Error) {
                $scope.pageNotification.alerts.addError(sanitizeHtmlService(result.Msg), $scope.notificationAlertArguments)
            }
            else {
                $scope.textFields = result.Result;
                $scope.textFields.hostID = $scope.hostID;
                //$scope.recordTypeChange($scope.hostRecordType, 'edit');
                RecordFields.isRecordTypeDropDownVisible = false;
                RecordFields.isRecordNameVisible = true;
                RecordFields.isHostVisible = true;
                RecordFields.isValueVisible = true;
                RecordFields.isTTlVisible = true;
            }
        });
    }
    else if (openModelParameter == 'addRedirectinner') {
        $scope.textFields.isCancel = true;

        if (ParentPageModelClass != null && ParentPageModelClass != '' && ParentPageModelClass != undefined) {

            if (ParentPageModelClass.IsUsingFreeDns || ParentPageModelClass.DnsType == "Enom" || ParentPageModelClass.DnsType == "NameCheapDefault" || ParentPageModelClass.DnsType == "NameCheapFreeDNS" && !IsHostRecordLocked) {
                $scope.textclear();
                $scope.textFields.recordType = $scope.recordTypeList[6].value;
                $scope.urlLookFun($scope.textFields.urlLook);
                RecordFields.isRecordTypeDropDownVisible = false;
                RecordFields.isRecordNameVisible = true;
                RecordFields.isDomainToRedirectVisible = true;
                RecordFields.isURlLookVisible = true;
                RecordFields.isDestinationURLVisible = true;
                RecordFields.isRedirectTypeVisible = true;
            }
            else {
                $scope.pageNotification.alerts.addError('Not Implemented !', $scope.notificationAlertArguments)
            }
        }


    }
    else if (openModelParameter == 'editRedirect') {
        $scope.showLoadPanel = true;
        $scope.textFields.isCancel = true;
        if (ParentPageModelClass != null && ParentPageModelClass != '' && ParentPageModelClass != undefined) {

            if (ParentPageModelClass.IsUsingFreeDns || ParentPageModelClass.DnsType == "Enom" || ParentPageModelClass.DnsType == "NameCheapDefault" || ParentPageModelClass.DnsType == "NameCheapFreeDNS" && !IsHostRecordLocked) {
                httpRepository.domainDns.editHostRecord($scope.hostID, $scope.domainName).then(function (result) {
                    if (result.Error) {
                        $scope.showLoadPanel = false;
                        $scope.saveChangesBtn = false;
                        $scope.pageNotification.alerts.addError(sanitizeHtmlService(result.Msg), $scope.notificationAlertArguments)
                    }
                    else {
                        $scope.showLoadPanel = false;
                        $scope.textFields = result.Result;
                        $scope.textFields.isCancel = true;
                        $scope.textFields.hostID = $scope.hostID;


                        $scope.recordTypeChange($scope.textFields.recordType, 'edit');
                        if ($scope.textFields.recordType == $scope.recordTypeList[6].value) {
                            if ($scope.textFields.host == $scope.urlLookList[1].value) {
                                $scope.textFields.domainToRedirect = $scope.domainRedirectList[0].value;
                                $scope.textFields.urlLook = $scope.urlLookList[1].value;
                                if ($scope.textFields.domainRedirectType == $scope.domainRedirectTypeList[1].value) {
                                    if ($scope.textFields.isMetaTages) {
                                        RecordFields.isMetaTagesVisible = true;
                                        RecordFields.isTitleVisible = true;
                                        RecordFields.isKeywordVisible = true;
                                        RecordFields.isDescriptionVisible = true;
                                        RecordFields.isFaviconURLVisible = false;
                                        if (openModelParameter == 'addNew' || openModelParameter == 'edit' || openModelParameter == 'manageAddNew' || openModelParameter == 'addRedirect' || openModelParameter == 'editRedirect') {
                                        	if (ParentPageModelClass == "Namecheap BasicDNS" || ParentPageModelClass.DnsType == 1 || ParentPageModelClass.DnsType == "NameCheapDefault" || ParentPageModelClass.DnsType == "NameCheapFreeDNS" || ParentPageModelClass == "FREE" || ParentPageModelClass == "FREE2") {
                                                RecordFields.isFaviconURLVisible = true;
                                            }
                                        }
                                        $scope.textFields.metaTitle = result.Result.metaTitle;
                                        $scope.textFields.metakey = result.Result.metakey;
                                        $scope.textFields.metaDescription = result.Result.metaDescription;
                                        $scope.textFields.metaFaviconURL = result.Result.metaFaviconURL;
                                    }
                                    else {
                                        RecordFields.isMetaTagesVisible = true;
                                    }
                                }
                                else {
                                    RecordFields.isMetaTagesVisible = false;
                                }
                            }
                            else if ($scope.textFields.host == $scope.urlLookList[2].value) {
                                $scope.textFields.domainToRedirect = $scope.domainRedirectList[1].value;
                                $scope.textFields.urlLook = $scope.urlLookList[2].value;
                                if ($scope.textFields.domainRedirectType == $scope.domainRedirectTypeList[1].value) {
                                    if ($scope.textFields.isMetaTages) {
                                        RecordFields.isMetaTagesVisible = true;
                                        RecordFields.isTitleVisible = true;
                                        RecordFields.isKeywordVisible = true;
                                        RecordFields.isDescriptionVisible = true;
                                        RecordFields.isFaviconURLVisible = false;
                                        if (openModelParameter == 'addNew' || openModelParameter == 'edit' || openModelParameter == 'manageAddNew' || openModelParameter == 'addRedirect' || openModelParameter == 'editRedirect') {
                                        	if (ParentPageModelClass == "Namecheap BasicDNS" || ParentPageModelClass.DnsType == 1 || ParentPageModelClass.DnsType == "NameCheapDefault" || ParentPageModelClass.DnsType == "NameCheapFreeDNS" || ParentPageModelClass == "FREE" || ParentPageModelClass == "FREE2") {
                                                RecordFields.isFaviconURLVisible = true;
                                            }
                                        }
                                        $scope.textFields.metaTitle = result.Result.metaTitle;
                                        $scope.textFields.metakey = result.Result.metakey;
                                        $scope.textFields.metaDescription = result.Result.metaDescription;
                                        $scope.textFields.metaFaviconURL = result.Result.metaFaviconURL;
                                    }
                                    else {
                                        RecordFields.isMetaTagesVisible = true;
                                    }
                                }
                                else {
                                    RecordFields.isMetaTagesVisible = false;
                                }
                            }
                            else if ($scope.textFields.host == "@.www") {
                                $scope.textFields.urlLook = $scope.urlLookList[0].value;
                                $scope.textFields.domainToRedirect = $scope.domainRedirectList[0].value;
                                if ($scope.textFields.domainRedirectType == $scope.domainRedirectTypeList[1].value) {
                                    if ($scope.textFields.isMetaTages) {
                                        RecordFields.isMetaTagesVisible = true;
                                        RecordFields.isTitleVisible = true;
                                        RecordFields.isKeywordVisible = true;
                                        RecordFields.isDescriptionVisible = true;
                                        RecordFields.isFaviconURLVisible = false;
                                        if (openModelParameter == 'addNew' || openModelParameter == 'edit' || openModelParameter == 'manageAddNew' || openModelParameter == 'addRedirect' || openModelParameter == 'editRedirect') {
                                        	if (ParentPageModelClass == "Namecheap BasicDNS" || ParentPageModelClass.DnsType == 1 || ParentPageModelClass.DnsType == "NameCheapDefault" || ParentPageModelClass.DnsType == "NameCheapFreeDNS" || ParentPageModelClass == "FREE" || ParentPageModelClass == "FREE2") {
                                                RecordFields.isFaviconURLVisible = true;
                                            }
                                        }
                                        $scope.textFields.metaTitle = result.Result.metaTitle;
                                        $scope.textFields.metakey = result.Result.metakey;
                                        $scope.textFields.metaDescription = result.Result.metaDescription;
                                        $scope.textFields.metaFaviconURL = result.Result.metaFaviconURL;
                                    }
                                    else {
                                        RecordFields.isMetaTagesVisible = true;
                                    }
                                }
                                else {
                                    RecordFields.isMetaTagesVisible = false;
                                }
                            }
                        }
                    }
                });
            }
            else {
                $scope.pageNotification.alerts.addError('Not Implemented !', $scope.notificationAlertArguments)
            }
        }
    }
    else if (openModelParameter == 'AddDDNS') {
        $scope.textclear();
        $scope.showLoadPanel = true;
        $scope.textFields.isDynamicDNS = true;
        RecordFields.isDDnsDropDownVisible = true;
        RecordFields.isDDnsExistingRecordVisible = true;
        $scope.textFields.isCancel = true;
        $scope.isDDNSModel = true;
        httpRepository.domainDns.getDisableDDNSHostRecord($scope.domainName).then(function (result) {

            if (result.Error) {
                $scope.showLoadPanel = false;
                $scope.saveChangesBtn = false;
                $scope.pageNotification.alerts.addError(sanitizeHtmlService(result.Msg), $scope.notificationAlertArguments)
            }
            else {
                $scope.showLoadPanel = false;
                $scope.getDisableDDNSHostList = result.Result;
                if ($scope.getDisableDDNSHostList[0].Host == "") {
                    RecordFields.isDDnsExistingRecordVisible = false;
                    $scope.textFields.ddnsRecordType = $scope.ddnsRecordTypeList[1].value;
                    $scope.changeDDnsRecordType($scope.textFields.ddnsRecordType);
                }
                else {
                    $scope.existingHost = "Select Records";
                    //$scope.existingHost = $scope.getDisableDDNSHostList[0].HostID;
                    //$scope.textFields.hostID = $scope.getDisableDDNSHostList[0].HostID;
                }
            }
        });
    }
    else if (openModelParameter == 'EditDDNS') {
        $scope.showLoadPanel = true;
        $scope.textFields.isCancel = true;
        $scope.isDDNSModel = true;
        httpRepository.domainDns.editHostRecord($scope.hostID, $scope.domainName).then(function (result) {
            if (result.Error) {
                $scope.showLoadPanel = false;
                $scope.saveChangesBtn = false;
                $scope.pageNotification.alerts.addError(sanitizeHtmlService(result.Msg), $scope.notificationAlertArguments)
            }
            else {
                $scope.showLoadPanel = false;
                $scope.textFields = result.Result;
                $scope.textFields.hostID = $scope.hostID;
                //$scope.recordTypeChange($scope.hostRecordType, 'edit');
                $scope.textFields.isDynamicDNS = true;
                RecordFields.isDDnsExistingRecordVisible = false;
                RecordFields.isRecordNameVisible = true;
                RecordFields.isHostVisible = true;
                RecordFields.isIPAddressVisible = true;
                RecordFields.isTTlVisible = true;
            }
        });
    }

}]);;
app.controller('addNameserversCtrl', ['$scope', '$element', '$rootScope', 'httpRepository', 'domainname', 'notificationService', 'pageHelper',
    function ($scope, $element, $rootScope, httpRepository, domainname, notificationService, pageHelper) {
        //Resource Local Properites

        var errorMessageRes = ErrorMessageRes;
        var stdNSTypes = function () {
            var nsTypes = [];
            for (var i = 1; i <= 9; i++) {
                nsTypes.push('ns' + i);
            }
            for (var i = 1; i <= 9; i++) {
                nsTypes.push('dns' + i);
            }
            return nsTypes;
        };

        $rootScope.closeLightbox = function () {
            window.location.href = '/Domains/DomainControlPanel/' + domainname + '/advancedns';
        }
        $scope.pageHelper = pageHelper;//for call helpers methods from view
        $scope.pageNotification = new notificationService.instance();
        $scope.standardNSTypes = stdNSTypes();
        $scope.domainname = domainname;
        $scope.addNameserversResource = AddNameserversRes;

        //$scope.checkValid = function (e) {
        //    var elem = angular.element(e.srcElement);
        //    var hostValue = elem.val();
        //    alert(hostValue);
        //    var validityHost = pageHelper.Validation.host(hostValue);
        //    elem.$setValidity('InvalidHost', validityHost.isValid);
        //    //  $scope.hostForm.nsip.nsname.$setValidity('InvalidHost', validityHost.isValid);
        //};
        $scope.onCheckIp = function (record) {
            if (record == null) return;
            var isValidIp = false;
            if (record != null && record.Ip != "" && record.Ip != null && record.Ip.length >= 7) {
                var validityIp4 = pageHelper.Validation.ip4(record.Ip);
                for (var validityName in validityIp4) {
                    isValidIp = validityIp4[validityName].isValid;
                }
            }
            record.valIp = isValidIp;
        };

        $scope.onCheckHost = function (record) {
            if (record == null) return;
            var isValidNs = false;
            if (record != null && record.Host != "" && record.Host != null) {
                record.errDetails = '';
                var validityHost = pageHelper.Validation.personalDNSHost(record.Host);
                isValidNs = validityHost.isValid;
            }
            if (isValidNs == true) {
                var filterItem = $scope.addNSbehavior.model.filter(function (obj) {
                    return obj.Host == record.Host && obj.$$hashKey != record.$$hashKey;
                })
                if (filterItem.length > 0) {
                    isValidNs = false;
                }
                if (record.PreviousHost != typeof (undefined) && record.PreviousHost != "") {
                    var filterItem = $scope.addNSbehavior.model.filter(function (obj) {
                        return obj.Host == record.PreviousHost && obj.$$hashKey != record.$$hashKey;
                    })
                    if (filterItem.length == 1) {
                        for (var count = 0 ; count < filterItem.length; count++) {
                            filterItem[count].valHost = true;
                        }
                    }
                }
                record.PreviousHost = record.Host;
            }
            record.valHost = isValidNs;
        };


        $scope.addNSbehavior = new pageHelper.AsyncStateBehavior({
            constructor: function () {
                console.log("In constructor");
                var instance = this.instance;
                var addCustomNS = function () {
                    console.log($scope.addNSbehavior.model);
                    $scope.addNSbehavior.model.unshift({ Type: "CUS", Host: "", Ip: "", valHost: false, valIp: false, Status: "", errDetails: "" });
                };
                var addStandardNS = function () {
                    $scope.addNSbehavior.model.unshift({ Type: "STD", Host: "", Ip: "", valHost: false, valIp: false, Status: "", errDetails: "" });
                };
                var removeNS = function (index) {
                    $scope.addNSbehavior.model.splice(index, 1);
                };
                instance.activeNotification = $scope.pageNotification.alerts;
                instance.stuckNotifications = $scope.pageNotification.stuckNotifications;
                instance.customValue += "Constr";
                instance.model = [];

                instance.showRows = function () {
                    return instance.model.length > 0;
                };
                instance.addCustomNS = addCustomNS;
                instance.addStandardNS = addStandardNS;
                instance.removeNS = removeNS;

                instance.saveChanges = function () {
                    instance.asyncStatus(pageHelper.AsyncStatus.Loading);
                    var isFormValid = $scope.addNameserversForm.$valid;
                    if (isFormValid) {
                        //instance.model.forEach(function(element)
                        //{
                        //    $scope.onCheckIp(element);
                        //});
                        instance.model.some(function (element) {
                            if (element.valIp == false) {
                                isFormValid = false;
                                return true;
                            }
                        });
                    }
                    if (isFormValid) {
                        //instance.model.forEach(function (element) {
                        //    $scope.onCheckHost(element);
                        //});
                        instance.model.some(function (element) {
                            if (element.valHost == false) {
                                isFormValid = false;
                                return true;
                            }
                        });
                    }

                    if (isFormValid) {
                        instance.model.forEach(function (element, index) {
                            element.Status = "INPROGRESS";
                            $scope.AddNameServerOnebyOne(instance, element, index);
                        });
                    }
                    else {
                        angular.forEach($scope.addNameserversForm.$error.required, function (formField) {
                            angular.forEach(formField.$error.required, function (field) { field.$setDirty(); console.log(field); });
                        });
                        instance.model.errDetails = '';
                        instance.asyncStatus(pageHelper.AsyncStatus.Error, { Msg: $scope.addNameserversResource.error_AddNameserversError });
                        instance.showErrors = true;
                        msg = errorMessageRes.error_FormIsNotValid;

                        instance.activeNotification.clear();
                        instance.activeNotification.addError(msg, {
                            hasClose: true,
                            isAutoHide: true,
                            onDestroyed: function () {
                                instance.activeNotification.clear();
                            }
                        });
                    }
                };

                console.log(instance.customValue);
            },
            onSuccess: function (params) {
                console.log("OnSuccess");
                var instance = this.instance;
                instance.model = [];
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
                if (instance.model.length == 0)
                    $rootScope.closeLightbox();
            },
            onActive: function (params) {
                console.log("onActive");
                var instance = this.instance;
                instance.showLoadPanel = false;
            },
            onLoading: function (params) {
                console.log("onLoading");
                var instance = this.instance;
                instance.showLoadPanel = true;
                instance.customValue += "onLoad";
            },
            onError: function (params) {
                console.log("onError");
                var instance = this.instance;
                instance.activeNotification = $scope.pageNotification.alerts.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: false
                });
                instance.showNotifications = true;
                instance.showHeader = true;
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
            }
        });

        $scope.AddNameServerOnebyOne = function (instance, element, index) {
            httpRepository.domainDns.createNameserver(domainname, element.Host, element.Ip).then(function (result, index) {

                // redirect to /Profile/Tools?result=s_dnsp   // s_dnsp is the success status
                //window.location.href = '/Profile/Tools/?result=s_dnsp';
                console.log(result);
                if (result != null && result != undefined) {
                    if (result.Error == false) {
                        if ((result.Result != null) && (result.Result.length > 0) && (result.Result[0].IsSuccess == true)) {
                            // Remove the success item
                            instance.model.splice(index, 1);
                            instance.stuckNotifications.addSuccess($scope.addNameserversResource.success_AddNS, {
                                hasClose: true,
                                isAutoHide: true
                            });
                        }
                        else {
                            element.Status = "ERROR";
                            element.errDetails = result.Result[0].Description;  //To DO: Limit size?
                            instance.asyncStatus(pageHelper.AsyncStatus.Error, { Msg: $scope.addNameserversResource.error_AddNameserversError });
                        }
                    }
                    else {
                        element.Status = "ERROR";
                        instance.asyncStatus(pageHelper.AsyncStatus.Error, { Msg: $scope.addNameserversResource.error_AddNameserversError, Description: result.Msg });
                    }
                    if (instance.model.length == 0)
                        instance.asyncStatus(pageHelper.AsyncStatus.Success);
                }
            });
        }
        //$scope.$watch('addNSbehavior.model.ip', function (newValue, oldValue) {
        //    if (newValue !== oldValue) {
        //        newValue = (newValue == null) ? "" : newValue.toString();
        //        var validityIp4 = pageHelper.Validation.ip4(newValue);
        //        for (var validityName in validityIp4) {

        //         //   $scope.nsip.nsip['errorMsg_' + validityName] = validityIp4[validityName].arg;
        //        //    $scope.hostForm.nsip.nsip.$setValidity(validityName, validityIp4[validityName].isValid);
        //        }
        //    }
        //});

        $scope.$watch('addNSbehavior.model.Ns', function (newValue, oldValue) {
            if (newValue !== oldValue) {
                newValue = (newValue == null) ? "" : newValue.toString();
                var validityHost = pageHelper.Validation.host(newValue);
                //  $scope.hostForm.nsip.nsname.$setValidity('InvalidHost', validityHost.isValid);
                console.log(validityHost);
            }
        });

    }]);;
app.controller('advancedDNSAddUpdateDnsSecRecordModalCtrl', ['$scope', '$modalInstance', 'listItem', 'pageHelper', 'notificationService', '$document', 'isHostedDomain', 'advansedDnsModelService', 'domainName', 'recordState', 'httpRepository',
function ($scope, $modalInstance, listItem, pageHelper, notificationService, $document, isHostedDomain, advansedDnsModelService, domainName, recordState, httpRepository) {
  $scope.pageNotification = new notificationService.instance();
  $scope.listItem = listItem;
  $scope.recordState = recordState;
  $scope.domainName = domainName;
  $scope.modelService = advansedDnsModelService;
  $scope.pageHelper = pageHelper;
  $scope.select2Options = { minimumResultsForSearch: -1, }
  $scope.tooltipSettings = { width: '1024', extraclass: 'tip-1024', align: 'right' };
  var errorMessageRes = ErrorMessageRes;
	$scope.$watch('modalForm', function(form) {
		$scope.listItem.editModel.modalForm = form;
	});


  $scope.modalBehavior = new pageHelper.AsyncStateBehavior({
    constructor: function () {
      var instance = this.instance;
      instance.showErrors = false;
      instance.activeNotification = $scope.pageNotification.alerts;

      instance.save = function () {
        instance.activeNotification.clear();
        if ($scope.listItem.editModel.canSave()) {
            if ($scope.listItem.editModel.isTheSameWithPrevSaved()) {
              $scope.listItem.asyncStatus(pageHelper.AsyncStatus.Success, { sender: "doNotNeedUpdate" });
              $scope.listItem.recordsListBehavior.updateActionAcsses();
              $modalInstance.close($scope.listItem);
            } else {
              $scope.listItem.recordsListBehavior.saveRecords([$scope.listItem], function (result) {
                if (result.Error == false) {
                  $modalInstance.close($scope.listItem);
                } else {
                  $scope.listItem.asyncStatus(pageHelper.AsyncStatus.Active);
                  instance.activeNotification.addError(result.Msg, {
                    hasClose: true,
                    isAutoHide: false
                  });
                }
              });
            }

        }
        else {
          instance.activeNotification.addError(errorMessageRes.error_FormIsNotValid, {
            hasClose: true,
            isAutoHide: false
          });
        }
      }

      instance.cancel = function () {
        $modalInstance.dismiss('cancel');
      };
      instance.asyncStatus(pageHelper.AsyncStatus.Active);
    },
    onSuccess: function (params) {
      var instance = this.instance;
      instance.asyncStatus(pageHelper.AsyncStatus.Active);
    },
    onActive: function (params) {
      var instance = this.instance;
      instance.showErrors = false;
    },
    onLoading: function (params) {
      var instance = this.instance;
      instance.showErrors = false;
    },
    onError: function (params) {
      var instance = this.instance;
      instance.showErrors = true;
      if (instance.activeNotification != null) {
        instance.activeNotification.clear();
      }
      instance.activeNotification.addError(params.Msg, {
        hasClose: true,
        isAutoHide: true
      });
    }
  });

  $document.bind('keydown', function (evt) {
    if (evt.which === 27 && !$scope.listItem.asyncStatus().isDisabled) {
      $modalInstance.dismiss('escape key press');
    }
  });
  $document.bind('click', function (evt) {
    if (angular.element(evt.target).hasClass("mfp-content") && !$scope.listItem.asyncStatus().isDisabled) {
      $scope.modalBehavior.cancel();
    }
  });
}]);
;
app.controller('advancedDNSAddUpdateRecordModalCtrl', ['$scope', '$modalInstance', 'listItem', 'pageHelper', 'notificationService', '$document','listType','advansedDnsModelService','domainName','recordState','httpRepository',
function ($scope, $modalInstance, listItem, pageHelper, notificationService, $document, listType, advansedDnsModelService, domainName, recordState, httpRepository) {
        $scope.pageNotification = new notificationService.instance();
        $scope.listItem = listItem;
        $scope.recordState = recordState;
        $scope.domainName = domainName;
        $scope.listType = listType;
        $scope.modelService = advansedDnsModelService;
        $scope.pageHelper = pageHelper;
        $scope.select2Options = { minimumResultsForSearch: -1, }
        $scope.tooltipSettings = { width: '1024', extraclass: 'tip-1024', align: 'right' };
        var errorMessageRes = ErrorMessageRes;
       
        $scope.modalBehavior = new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                instance.showErrors = false;
                instance.activeNotification = $scope.pageNotification.alerts;

                $scope.listItem.editModel.canSave= function() {
                    if ($scope.mailboxDataForm.$valid && (!$scope.listItem.editModel.isMetaFilledValid || ($scope.listItem.editModel.isMetaFilledValid && $scope.listItem.editModel.isMetaFilledValid()))) {
                        return true;
                    }
                    angular.forEach($scope.mailboxDataForm.$error.required, function (field) {
                        field.$setDirty();
                    });
                    angular.forEach($scope.mailboxDataForm.$error.pattern, function (field) {
                        field.$setDirty();
                    });
                    
                    return false;
                }

                instance.save = function () {
                    instance.activeNotification.clear();
                    if ($scope.listItem.editModel.canSave()) {
                        if ($scope.listItem.recordsListBehavior.saveAll &&
                            !$scope.listItem.recordsListBehavior.actionAcsses.canSaveOne && $scope.listItem.recordsListBehavior.actionAcsses.canSaveAll) {
                            $scope.listItem.asyncStatus(pageHelper.AsyncStatus.Loading);
                            httpRepository.domainAdvancedDNS.updateEmailType($scope.domainName, $scope.listItem.recordsListBehavior.selectedEmailProvider.value, [$scope.listItem.editModel.getRealModel()]).then(function (result) {
                                if (result.Error == false) {
                                    $modalInstance.close($scope.listItem);
                                    $scope.listItem.recordsListBehavior.updateGridAfterSaveAll(result);
                                } else {
                                    instance.newRecords[0].asyncStatus(pageHelper.AsyncStatus.Error, { sender: "saveAll", Msg: result.Msg })
                                }
                            });

                        } else {
                            if ($scope.listItem.editModel.isTheSameWithPrevSaved()) {
                                $scope.listItem.asyncStatus(pageHelper.AsyncStatus.Success, { sender: "doNotNeedUpdate" });
                                $scope.listItem.recordsListBehavior.updateActionAcsses();
                                $modalInstance.close($scope.listItem);
                            } else {
                                $scope.listItem.recordsListBehavior.saveRecords([$scope.listItem], function (result) {
                                    if (result.Error == false) {
                                        $modalInstance.close($scope.listItem);
                                    } else {
                                        $scope.listItem.asyncStatus(pageHelper.AsyncStatus.Active);
                                        instance.activeNotification.addError(result.Msg, {
                                            hasClose: true,
                                            isAutoHide: false
                                        });
                                    }
                                });
                            }
                        }

                    }
                    else {
                        instance.activeNotification.addError(errorMessageRes.error_FormIsNotValid, {
                            hasClose: true,
                            isAutoHide: false
                        });
                    }
                }
                
                instance.cancel = function () {
                    
                    $modalInstance.dismiss('cancel');
                };
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
            },
            onSuccess: function (params) {
                var instance = this.instance;
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
            },
            onActive: function (params) {
                var instance = this.instance;
                instance.showErrors = false;
            },
            onLoading: function (params) {
                var instance = this.instance;
                instance.showErrors = false;
            },
            onError: function (params) {
                var instance = this.instance;
                instance.showErrors = true;
                if (instance.activeNotification != null) {
                    instance.activeNotification.clear();
                }
                instance.activeNotification.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
        });

        $document.bind('keydown', function (evt) {
            if (evt.which === 27 && !$scope.listItem.asyncStatus().isDisabled) {
                $modalInstance.dismiss('escape key press');
            }
        });
        $document.bind('click', function (evt) {
            if (angular.element(evt.target).hasClass("mfp-content") && !$scope.listItem.asyncStatus().isDisabled) {
                $scope.modalBehavior.cancel();
            }
        });
    }]);
;
app.controller('advancedDNSUpdatePersonalDnsServerModalCtrl', ['$scope', '$modalInstance','listItem', 'pageHelper', 'notificationService', '$document','advansedDnsModelService', 'domainName','httpRepository',
function ($scope, $modalInstance, listItem, pageHelper, notificationService, $document, advansedDnsModelService, domainName, httpRepository) {
        $scope.pageNotification = new notificationService.instance();
        $scope.listItem = listItem;
        $scope.domainName = domainName;
        $scope.modelService = advansedDnsModelService;
        $scope.pageHelper = pageHelper;
        $scope.select2Options = { minimumResultsForSearch: -1, }
        var errorMessageRes = ErrorMessageRes;
       
        $scope.modalBehavior = new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                instance.showErrors = false;
                instance.activeNotification = $scope.pageNotification.alerts;

                $scope.listItem.canSave= function() {
                    if ($scope.mailboxDataForm.$valid ) {
                        return true;
                    }
                    angular.forEach($scope.mailboxDataForm.$error.required, function (field) {
                        field.$setDirty();
                    });
                    angular.forEach($scope.mailboxDataForm.$error.pattern, function (field) {
                        field.$setDirty();
                    });
                    
                    return false;
                }

                instance.save = function () {
                    instance.activeNotification.clear();
                    $scope.listItem.asyncStatus(pageHelper.AsyncStatus.Loading);
                    if ($scope.listItem.canSave()) {
                        if ($scope.listItem.savedModel.IP != $scope.listItem.editModel.IP) {
                            httpRepository.domainAdvancedDNS.nameServerUpdate($scope.domainName, $scope.listItem.savedModel.Nameserver, $scope.listItem.savedModel.IP, $scope.listItem.editModel.IP).then(function (result) {
                                result.sender = "update";
                                if (result.Error == false) {
                                    $scope.listItem.asyncStatus(pageHelper.AsyncStatus.Success, result);
                                    $modalInstance.close($scope.listItem);
                                } else {
                                    $scope.listItem.asyncStatus(pageHelper.AsyncStatus.Active);
                                    instance.activeNotification.addError(result.Msg, {
                                        hasClose: true,
                                        isAutoHide: false
                                    });
                                }
                            });
                        } else {
                            $scope.listItem.asyncStatus(pageHelper.AsyncStatus.Success, { sender: "doNotNeedUpdate" });
                            $modalInstance.close($scope.listItem);
                        }
                    }
                    else {
                        instance.activeNotification.addError(errorMessageRes.error_FormIsNotValid, {
                            hasClose: true,
                            isAutoHide: false
                        });
                    }
                }
                
                instance.cancel = function () {
                    
                    $modalInstance.dismiss('cancel');
                };
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
            },
            onSuccess: function (params) {
                var instance = this.instance;
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
            },
            onActive: function (params) {
                var instance = this.instance;
                instance.showErrors = false;
            },
            onLoading: function (params) {
                var instance = this.instance;
                instance.showErrors = false;
            },
            onError: function (params) {
                var instance = this.instance;
                instance.showErrors = true;
                if (instance.activeNotification != null) {
                    instance.activeNotification.clear();
                }
                instance.activeNotification.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
        });

        $document.bind('keydown', function (evt) {
            if (evt.which === 27 && !$scope.listItem.asyncStatus().isDisabled) {
                $modalInstance.dismiss('escape key press');
            }
        });
        $document.bind('click', function (evt) {
            if (angular.element(evt.target).hasClass("mfp-content") && !$scope.listItem.asyncStatus().isDisabled) {
                $scope.modalBehavior.cancel();
            }
        });
    }]);
;
app.controller('domainAdvancedDNSCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', 'notificationService', 'pageHelper', '$timeout', 'ncGridParams', 'ncGridEventNames', '$templateCache', 'advansedDnsModelService', '$modal', '$compile', 'promiceQueue', '$window',
	function ($scope, $rootScope, httpRepository, $filter, notificationService, pageHelper, $timeout, ncGridParams, ncGridEventNames, $templateCache, advansedDnsModelService, $modal, $compile, promiceQueue, $window) {
	    $scope.pageHelper = pageHelper;
	    $scope.pageNotification = new notificationService.instance();
	    $scope.modelService = advansedDnsModelService;
	    $scope.select2Options = {
	        minimumResultsForSearch: -1,
	        dropdownCssClass: 'small'
	    }
	    $scope.actionQueue = new promiceQueue();

	    var bulcIsEmpty = "Select the record(s) to be modified by this action.";

	    $scope.recordState = {
	        active: "",
	        editing: "edit",
	        creating: "new",
	    }
	    $scope.isMobile = function () {
	        return $window.innerWidth <= 1023;
	    }
	    $scope.lockType = {
	        editable: 0,
	        readOnly: 1,
	        locked: 2,
	    }

	    $scope.listType = {
	        hostRecords: 0,
	        mailSettings: 1,
	        dynamicDns: 2,
	        personalDnsServer: 3,
	        dnsSec: 4
	    }

	    $scope.isPromtEditRecord = true;
	    $scope.isPromtRemoveRecord = true;

	    $scope.disablePromtRemoveRecord = function () {
	        $scope.isPromtRemoveRecord = false;
	        angular.element(".prompt-tip.remove-tip").each(function (element) {
	            angular.element(element).remove();
	        });
	    }
	    $scope.disablePromtEditRecord = function () {
	        $scope.isPromtEditRecord = false;
	        angular.element(".prompt-tip.locked-tip").each(function (element) {
	            angular.element(element).remove();
	        });
	    }

	    $scope.advdnsMultipleTemplateUrl = httpRepository.domainAdvancedDNS.getAdvancedDnsRecordTemplatePath;

	    $scope.domainDnsStatus = {
	        Default: 0,
	        SharedServerType: 1,
	        CustomServerType: 2,
	        ThirdParty: 3,
	        TransferRights: 4,
	        Error: 5,
	    }

	    $scope.domainTransferRights = {
	        IsDDNS: true,
	        IsHostsMails: true,
	        IsPersonalNameserver: true,
            IsDNSSEC: true,
	    }

	    $scope.pageBehavior = new pageHelper.AsyncStateBehavior({
	        constructor: function () {
	            var instance = this.instance;
	            instance.isShowBasicGrids = false;
	            instance.isShowPersonalDNSGrid = false;
	            instance.asyncStatus(pageHelper.AsyncStatus.Loading);
	            instance.setDomainName = function (domainName) {
	                instance.domainName = domainName;

	                $templateCache.get(null, httpRepository.domainAdvancedDNS.getAdvancedDnsRecordTemplatePath);

	                //httpRepository.domainDns.getEmailSettingInfo(domainName);
	                httpRepository.domainAdvancedDNS.getDefaultEmailProviderRecords().then(function (result) {
	                    result.sender = "getDefaultRecords";
	                    if (result.Error == false) {
	                        instance.DefaultEmailProviderRecords = result.Result.DefaultEmailProviderRecords;
	                    }
	                    //instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
	                });

	                httpRepository.domainAdvancedDNS.getAdvancedDnsInfo(domainName, false).then(function (result) {
	                    result.sender = "getModel";
	                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
	                });
	            }
	            $scope.hostRecordsList = {};
	            $scope.hostRecordsList.ncGrid = new ncGridParams();
	            $scope.hostRecordsList.ncGrid.parameters.search.serchPropertyNames =
                [
                    'model.selectedRecordTypeValue', 'model.Host', 'model.Data', 'model.Service', 'model.Protocol', 'model.Target', 'model.Weight', 'model.Port',
                    'model.MetaTitle', 'model.MetaKeywords', 'model.MetaDescription'
                ];

	            $scope.mailSettingsList = {};
	            $scope.mailSettingsList.ncGrid = new ncGridParams();
	            //$scope.mailSettingsList.ncGrid.parameters.search.serchPropertyNames = ['model.selectedRecordTypeValue', 'model.Host', 'model.Data', 'model.Priority'];

	            $scope.dynamicDnsList = {};
	            $scope.dynamicDnsList.ncGrid = new ncGridParams();
	            $scope.dynamicDnsList.ncGrid.parameters.search.serchPropertyNames = ['model.selectedRecordTypeValue', 'model.Host', 'model.Data'];

	            $scope.personalDnsList = {};
	            $scope.personalDnsList.ncGrid = new ncGridParams();
	            $scope.personalDnsList.ncGrid.parameters.search.serchPropertyNames = ['model.Nameserver', 'model.IP'];

	            $scope.dnsSecList = {};
	            $scope.dnsSecList.ncGrid = new ncGridParams();

	            instance.updateValueRowTemplateName = function (recordInstance) {
	                recordInstance.valueViewTemplatePath = "advancedDns_" + instance.recordType.type + "_view";
	                recordInstance.valueEditTemplatePath = "advancedDns_" + instance.recordType.type + "_edit";
	            }
	            instance.getRecordType = function () {

	            }


	        },
	        onSuccess: function (params) {
	            var instance = this.instance;
	            if (params.sender == 'getModel') {
	                instance.model = params.Result;
	                instance.loading = false;
	                $scope.isDomainLocked = params.Result.Info.isDomainLocked;
	                function getDomainDnsStatus() {
	                    var status = $scope.domainDnsStatus.Default;

	                    if (instance.model.Info.SharedHosting) {
	                        status = $scope.domainDnsStatus.SharedServerType;
	                    }
	                    else if (instance.model.Info.DnsProviderType == advansedDnsModelService.DNSProviderSubType.CUSTOM) {
	                        status = $scope.domainDnsStatus.CustomServerType;
	                    }
	                    else if (!instance.model.Info.DomainExists
                                 || (!instance.model.Info.IsHostedDomain && !instance.model.Info.IsOwner && !instance.model.DynDnsOverviewModel.DNSDetails.IsUsingOurDNS && instance.model.Info.DnsProviderType == advansedDnsModelService.DNSProviderSubType.NONE)
                                 || (instance.model.DomainBasicDetails.PremiumDNS.IsPremiumdDNSBuyed && !instance.model.DomainBasicDetails.PremiumDNS.IsActive && !instance.model.DynDnsOverviewModel.DNSDetails.IsUsingOurDNS)) {
	                        status = $scope.domainDnsStatus.ThirdParty;
	                    }
	                        //Check condition for third party free dns domain
	                    else if (instance.model.Info.DomainExists && instance.model.Info.IsHostedDomain && !instance.model.Info.IsOwner && instance.model.Info.DnsProviderType == advansedDnsModelService.DNSProviderSubType.FREE2) {
	                        status = $scope.domainDnsStatus.ThirdParty;
	                    }
	                    else if (!instance.model.Info.IsHostedDomain && !instance.model.Info.IsOwner && instance.model.DynDnsOverviewModel.DNSDetails.IsUsingOurDNS) {
	                        status = $scope.domainDnsStatus.TransferRights;
	                        var isHasRights = function (rightsName) {
	                            for (var i = 0; i < instance.model.Info.ModificationRights.length; i++) {
	                                if (instance.model.Info.ModificationRights[i] == rightsName)
	                                    return true;
	                            }
	                            return false;
	                        }

	                        instance.domainTransferRights = {
	                            IsDDNS: isHasRights("ddns"),
	                            IsHostsMails: isHasRights("hosts"),
	                            IsPersonalNameserver: isHasRights("nameserver"),
	                            IsDNSSEC: isHasRights("dnsSec"),
	                        }
	                        if (!instance.domainTransferRights.IsDDNS && !instance.domainTransferRights.IsHostsMails && !instance.domainTransferRights.IsPersonalNameserver && !instance.domainTransferRights.IsDNSSEC) {
	                            instance.activeNotification = $scope.pageNotification.alerts.addWarning("You have not permission to manage this domain.", {
	                                hasClose: true,
	                                isAutoHide: false
	                            });
	                        }
	                    } else {
	                        status = $scope.domainDnsStatus.Default;
	                    }
	                    return status;
	                }

	                instance.domainTransferRights = angular.copy($scope.domainTransferRights);
	                instance.domainDnsStatus = getDomainDnsStatus();

	                hostRecordsListConstructor();
	                mailSettingsListConstructor();
	                createPersonalDnsConstructor();
	                dynamicDnsListConstructor();
	                createDnsSecConstructor();

	                $scope.hostRecordsList.ncGrid.settings.reload();
	                $scope.hostRecordsList.ncGrid.settings.actions.updateDropDownBtns();
	                $scope.mailSettingsList.ncGrid.settings.reload();
	                //$scope.dynamicDnsList.ncGrid.settings.reload();
	                if ($scope.isMobile()) {
	                    $templateCache.get(httpRepository.domainAdvancedDNS.getAdvancedDNSAddUpdateRecordModal);
	                    $templateCache.get(httpRepository.domainAdvancedDNS.getAdvancedDNSDnsSecAddUpdateRecordModal);
	                }
	            }

	            instance.asyncStatus(pageHelper.AsyncStatus.Active);
	        },
	        onActive: function (params) {
	            var instance = this.instance;
	        },
	        onLoading: function (params) {
	            var instance = this.instance;
	            instance.loading = true;
	        },
	        onLocked: function (params) {
	            var instance = this.instance;
	        },
	        onError: function (params) {
	            var instance = this.instance;
	            instance.domainDnsStatus = $scope.domainDnsStatus.Error;
	            instance.loading = false;
	            instance.activeNotification = $scope.pageNotification.alerts.addError(params.Msg, {
	                hasClose: true,
	                isAutoHide: false
	            });
	        }
	    });

	    $scope.checkMobileAction = function (recordInstance) {
	        if ($scope.isMobile()) {
	            var activeModalInstance = {};
	            if (recordInstance.recordsListBehavior.listType != $scope.listType.dnsSec) {
	                activeModalInstance = $modal.open({
	                    templateUrl: httpRepository.domainAdvancedDNS.getAdvancedDNSAddUpdateRecordModal,
	                    controller: 'advancedDNSAddUpdateRecordModalCtrl',
	                    size: 'lg',
	                    resolve: {
	                        listItem: function () {
	                            return recordInstance;
	                        },
	                        listType: function () {
	                            return $scope.listType;
	                        },
	                        domainName: function () {
	                            return $scope.pageBehavior.domainName;
	                        },
	                        recordState: function () {
	                            return $scope.recordState;
	                        }

	                    }
	                });
	            } else {
	                activeModalInstance = $modal.open({
	                    templateUrl: httpRepository.domainAdvancedDNS.getAdvancedDNSDnsSecAddUpdateRecordModal,
	                    controller: 'advancedDNSAddUpdateDnsSecRecordModalCtrl',
	                    size: 'lg',
	                    resolve: {
	                        listItem: function () {
	                            return recordInstance;
	                        },
	                        isHostedDomain: function () {
	                            return $scope.pageBehavior.model.Info.IsHostedDomain;
	                        },
	                        domainName: function () {
	                            return $scope.pageBehavior.domainName;
	                        },
	                        recordState: function () {
	                            return $scope.recordState;
	                        }

	                    }
	                });
	            }

	            activeModalInstance.result.then(function (msg) {
	                activeModalInstance = null;
	            }, function () {
	                if (recordInstance) {
	                    recordInstance.cancelRecord();
	                }
	                activeModalInstance = null;
	            });
	        }
	    }

	    //#region Common Constructors
	    function ncGridConstructor(instance) {
	        var ncGrid = instance.ncGrid;
	        ncGrid.parameters.mapping.isLazyLoading = false;
	        ncGrid.parameters.storage.addNewFirst = false;

	        ncGrid.eventListener.then(function (eventScope) {
	            eventScope.$on(ncGridEventNames.ncGridRenderPageAfter, function (event, parameters) {
	                if (instance.showMoreLess)
	                    instance.showMoreLess.checkState();
	            });
	        });
	        ncGrid.settings.selection.canChangeSelection = function (columnData) {
	            return columnData.savedModel != null && !columnData.asyncStatus().isDisabled;
	        }

	        //A+Dynamic DNS synchronization
	        if (instance.listType == $scope.listType.hostRecords || instance.listType == $scope.listType.dynamicDns) {
	            var watchList = (instance.listType == $scope.listType.hostRecords) ? $scope.dynamicDnsList : $scope.hostRecordsList;
	            watchList.ncGrid.eventListener.then(function (eventScope) {
	                eventScope.$on(ncGridEventNames.ncGridAddItemAfter, function (event, parameters) {
	                    if (parameters.item.recordType.sortValue == advansedDnsModelService.recordTypes.AdDns.sortValue) {
	                        var synchItem = $filter('propertyFilter')(ncGrid.parameters.storage.requestData, { "model.HostId": parameters.item.recordModel.HostId })[0];
	                        if (synchItem == null) {
	                            synchItem = createRecordBehavior(angular.copy(parameters.item.recordModel), instance, instance.listType);
	                            synchItem.asyncStatus(pageHelper.AsyncStatus.Success, { sender: "doNotNeedUpdate" });
	                            ncGrid.settings.actions.addNewItem(synchItem);
	                            var newItem = $filter('propertyFilter')($scope.pageBehavior.model.CustomHostRecords.Records, { "HostId": parameters.item.recordModel.HostId })[0];
	                            if (newItem == null) {
	                                $scope.pageBehavior.model.CustomHostRecords.Records.push(parameters.item.recordModel);
	                            }
	                        }
	                    }
	                });
	                eventScope.$on(ncGridEventNames.ncGridRemoveItemAfter, function (event, parameters) {
	                    if (parameters.item.recordType.sortValue == advansedDnsModelService.recordTypes.AdDns.sortValue) {
	                        var synchItem = $filter('propertyFilter')(ncGrid.parameters.storage.requestData, { "model.HostId": parameters.item.recordModel.HostId })[0];
	                        if (synchItem != null) {
	                            ncGrid.settings.actions.removeItem(synchItem);
	                            var removeItem = $filter('propertyFilter')($scope.pageBehavior.model.CustomHostRecords.Records, { "HostId": parameters.item.recordModel.HostId })[0];
	                            var removeIndex = $scope.pageBehavior.model.CustomHostRecords.Records.indexOf(removeItem);
	                            if (removeIndex != -1) {
	                                $scope.pageBehavior.model.CustomHostRecords.Records.splice(removeIndex, 1);
	                            }

	                        }
	                    }
	                    //HOST RECORDS-> check records count if it is 0 get from server default records
	                    if (watchList.listType == $scope.listType.hostRecords && watchList.ncGrid.parameters.storage.requestData.length == 0) {
	                        watchList.ncGrid.parameters.mapping.isLoading = true;
	                        httpRepository.domainAdvancedDNS.getAdvancedDnsInfo($scope.pageBehavior.domainName, false).then(function (result) {
	                            watchList.ncGrid.parameters.mapping.isLoading = false;
	                            if (result.Error == false) {
	                                $scope.pageBehavior.model = result.Result;
	                                watchList.ncGrid.settings.reload();
	                            }
	                        });
	                    }
	                });
	            });
	            $scope.$on('updateA+DynamicDNSRecord', function (event, args) {
	                if (args.listType != instance.listType) {
	                    var synchItem = $filter('propertyFilter')(ncGrid.parameters.storage.requestData, { "model.HostId": args.item.recordModel.HostId })[0];
	                    synchItem.recordModel = angular.copy(args.item.recordModel);
	                    synchItem.model = advansedDnsModelService[synchItem.recordType.type].viewModel(angular.copy(synchItem.recordModel));
	                    synchItem.savedModel = angular.copy(synchItem.model);
	                    synchItem.asyncStatus(pageHelper.AsyncStatus.Success, { sender: "doNotNeedUpdate" });
	                    var updateItem = $filter('propertyFilter')($scope.pageBehavior.model.CustomHostRecords.Records, { "HostId": args.item.recordModel.HostId })[0];
	                    if (updateItem != null) {
	                        updateItem.Host = synchItem.model.Host;
	                        updateItem.Data = synchItem.model.Data;
	                    }
	                }
	            });
	        }
	    }

	    function showMoreLessConstructor(ncGrid) {
	        return {
	            isMore: null,
	            isLess: null,
	            onMore: function () {
	                this.isMore = false;
	                this.isLess = true;
	                this.checkState();
	            },
	            onLess: function () {
	                this.isMore = true;
	                this.isLess = false;
	                this.checkState();
	            },
	            checkState: function () {
	                if (ncGrid.parameters.storage.requestData.length <= 5) {
	                    this.isMore = false;
	                    this.isLess = false;
	                } else if (this.isMore == null) {
	                    this.isMore = true;
	                }
	                for (var i = 0; i < ncGrid.parameters.storage.requestData.length; i++) {
	                    if (ncGrid.parameters.storage.requestData[i].model.HostId == -1 || i < 5 || this.isLess) {
	                        ncGrid.parameters.storage.requestData[i].limitedDisplay = false;
	                    } else {
	                        ncGrid.parameters.storage.requestData[i].limitedDisplay = true;
	                    }
	                }
	            }
	        }
	    }

	    function actionConstructor(instance, listType) {
	        instance.notSavedRecords = [];
	        instance.newRecords = [];

	        instance.addRecord = function (e, customRecordBehavior) {
	            var newRecord = (!customRecordBehavior) ? new createRecordBehavior(null, instance, listType) : customRecordBehavior;
	            instance.newRecords.push(newRecord);
	            instance.notSavedRecords.push(newRecord);
	            instance.showMoreLess.onMore();
	            $scope.checkMobileAction(newRecord);
	            if (newRecord.recordType) {
	                newRecord.focusValues = angular.copy(newRecord.recordType.focusedFields);
	            }


	            if (!$scope.isMobile()) {
	                newRecord.setFocus(null);

	                var offset = $(e.target).offset();
	                var offsetTop = offset.top - 300;
	                $('html, body').animate({
	                    scrollTop: offsetTop
	                }, 0);
	            }
	        }

	        instance.saveRecords = function (itemList, modalCallBack) {
	            if (itemList == null || itemList.length == 0)
	                return;

	            function actionFn(actionItem, queueDefer) {
	                var promise = {};

	                if (instance.listType == $scope.listType.dnsSec) {
	                    if (actionItem.recordState == $scope.recordState.creating) {
	                        promise = httpRepository.domainAdvancedDNS.addDnsSecRecords($scope.pageBehavior.domainName, $scope.pageBehavior.model.Info.IsHostedDomain, [actionItem.editModel.getRealModel()]);
	                    } else {
	                        promise = httpRepository.domainAdvancedDNS.updateDnsSecRecord($scope.pageBehavior.domainName, $scope.pageBehavior.model.Info.IsHostedDomain, actionItem.recordModel, actionItem.editModel.getRealModel())
	                    }

	                } else {
	                    promise = httpRepository.domainAdvancedDNS.addOrUpdateHostRecord($scope.pageBehavior.domainName, actionItem.editModel.getRealModel(), actionItem.recordState == $scope.recordState.creating);
	                }
	                promise.then(function (result) {
	                    result.sender = (actionItem.recordState == $scope.recordState.creating) ? "add" : "update";
	                    if (!modalCallBack) {
	                        actionItem.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
	                        instance.updateActionAcsses();
	                    } else {
	                        if (result.Error == false) {
	                            actionItem.asyncStatus(pageHelper.AsyncStatus.Success, result);
	                        }
	                        modalCallBack(result);
	                    }
	                    queueDefer.resolve();
	                });

	            }

	            var notValidItemsCount = 0;
	            for (var index = 0; index < itemList.length; index++) {
	                var currentItem = itemList[index];
	                currentItem.asyncStatus(pageHelper.AsyncStatus.Loading);
	                if (currentItem.editModel.isTheSameWithPrevSaved()) {
	                    currentItem.asyncStatus(pageHelper.AsyncStatus.Success, { sender: "doNotNeedUpdate" });
	                } else {
	                    if (currentItem.editModel.canSave()) {
	                        $scope.actionQueue.push(actionFn, [itemList[index]]);
	                    } else {
	                        notValidItemsCount++;
	                        currentItem.asyncStatus(pageHelper.AsyncStatus.Active);
	                    }
	                }
	            }

	            if (instance.listType == $scope.listType.dnsSec && itemList.length == notValidItemsCount) {
	                if (instance.activeNotification && instance.activeNotification.destroy) {
	                    instance.activeNotification.destroy();
	                }
	                instance.activeNotification = $scope.pageNotification.stuckNotifications.addWarning("To enable DNSSEC, get a DS (Delegation of Signing) from your DNS provider and provide it here.", {
	                    hasClose: true,
	                    isAutoHide: true
	                });
	                return;
	            }
	        }

	        instance.removeRecords = function (itemList) {
	            if (itemList == null || itemList.length == 0) {
	                if (instance.activeNotification && instance.activeNotification.destroy) {
	                    instance.activeNotification.destroy();
	                }
	                instance.activeNotification = $scope.pageNotification.stuckNotifications.addWarning(bulcIsEmpty, {
	                    hasClose: true,
	                    isAutoHide: true
	                });
	                return;
	            }

	            function actionFn(actionItem, queueDefer) {
	                var promise = {};
	                if (instance.listType == $scope.listType.dnsSec) {
	                    promise = httpRepository.domainAdvancedDNS.removeDomainDnsSecRecords($scope.pageBehavior.domainName, $scope.pageBehavior.model.Info.IsHostedDomain, [actionItem.model]);
	                } else {
	                    promise = httpRepository.domainAdvancedDNS.removeDomainDnsRecord(actionItem.model.HostId, actionItem.model.RecordType, $scope.pageBehavior.domainName);
	                }
	                promise.then(function (result) {
	                    result.sender = result.sender = "remove";
	                    actionItem.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
	                    instance.updateActionAcsses();
	                    queueDefer.resolve();
	                });
	            }

	            for (var index = 0; index < itemList.length; index++) {
	                if (instance.listType == $scope.listType.mailSettings && (index == itemList.length - 1 && $scope.mailSettingsList.ncGrid.parameters.storage.requestData.length == itemList.length)) {
	                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addWarning("At least one MX record should be present", {
	                        hasClose: true,
	                        isAutoHide: true
	                    });
	                }
	                else if (instance.listType == $scope.listType.dnsSec && (index == itemList.length - 1 && $scope.dnsSecList.ncGrid.parameters.storage.requestData.length == itemList.length)) {
	                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addWarning("At least one DNSSEC record should be present", {
	                        hasClose: true,
	                        isAutoHide: true
	                    });
	                } else {
	                    itemList[index].asyncStatus(pageHelper.AsyncStatus.Loading);
	                    $scope.actionQueue.push(actionFn, [itemList[index]]);
	                }
	            }
	        }
	        instance.actionAcsses = {
	            canRemove: true,
	            canSaveAll: true,
	            canSaveOne: true,
	            canAddNew: true,
	            canCancel: true
	        }
	        instance.updateActionAcsses = function () { };
	    }

	    //#endregion 

	    //#region HOST RECORDS
	    function hostRecordsListConstructor() {
	        var instance = $scope.hostRecordsList;
	        instance.listType = $scope.listType.hostRecords;
	        instance.showMoreLess = showMoreLessConstructor(instance.ncGrid);

	        ncGridConstructor(instance);

	        instance.ncGrid.settings.getData = function ($defer, ncGridState) {
	            var customRecords = $scope.pageBehavior.model.CustomHostRecords.Records;
	            var result = [];
	            for (var i = 0; i < customRecords.length; i++) {
	                if (customRecords[i].EmailProvider == null &&
                        customRecords[i].RecordType != advansedDnsModelService.realHostType.MX &&
                        customRecords[i].RecordType != advansedDnsModelService.realHostType.MXE) {
	                    result.push(createRecordBehavior(customRecords[i], $scope.hostRecordsList, $scope.listType.hostRecords));
	                }
	            }

	            $defer.resolve({ Data: result });
	        }

	        actionConstructor(instance, $scope.listType.hostRecords);

	        //Init available RecordTypes for grid
	        instance.availableRecordTypes = [];
	        instance.availableRecordTypes.push(advansedDnsModelService.recordTypes.A);
	        instance.availableRecordTypes.push(advansedDnsModelService.recordTypes.AdDns);
	        instance.availableRecordTypes.push(advansedDnsModelService.recordTypes.AAAA);
	        instance.availableRecordTypes.push(advansedDnsModelService.recordTypes.CNAME);
	        instance.availableRecordTypes.push(advansedDnsModelService.recordTypes.NS);
	        instance.availableRecordTypes.push(advansedDnsModelService.recordTypes.SRV);
	        instance.availableRecordTypes.push(advansedDnsModelService.recordTypes.TXT);
	        instance.availableRecordTypes.push(advansedDnsModelService.recordTypes.URL);

	        //Init available UrlTypes URL redirect type record
	        instance.availableUrlTypes = [];
	        Object.keys(advansedDnsModelService.availableUrlTypes).forEach(function (element) {
	            if ($scope.pageBehavior.model.Info.DnsProviderType != advansedDnsModelService.DNSProviderSubType.ENOM ||
                ($scope.pageBehavior.model.Info.DnsProviderType == advansedDnsModelService.DNSProviderSubType.ENOM &&
                    advansedDnsModelService.availableUrlTypes[element].sortValue != advansedDnsModelService.availableUrlTypes.Permanent.sortValue)) {
	                instance.availableUrlTypes.push(advansedDnsModelService.availableUrlTypes[element]);
	            }
	        });
	        instance.availableUrlTypes = $filter('orderBy')(instance.availableUrlTypes, 'sortValue');

	        //Init available TtlTypes for record
	        instance.availableTtlTypes = [];
	        Object.keys(advansedDnsModelService.availableTtlTypes).forEach(function (element) {
	            instance.availableTtlTypes.push(advansedDnsModelService.availableTtlTypes[element]);
	        });
	        instance.availableTtlTypes = $filter('orderBy')(instance.availableTtlTypes, 'sortValue');
	    }

	    //#endregion

	    //#region MAIL SETTINGS
	    function mailSettingsListConstructor() {
	        var instance = $scope.mailSettingsList;
	        instance.listType = $scope.listType.mailSettings;

	        instance.showMoreLess = showMoreLessConstructor(instance.ncGrid);

	        var getEmailEmailProvider = function (savedValue, sortValue) {
	            if (savedValue == null && sortValue == null || savedValue == 0) {
	                return instance.availableEmailProviders[0];
	            } else if (savedValue == 6 || savedValue == 7) {
	                return $filter('propertyFilter')(instance.availableEmailProviders, { 'value': 3 })[0];;
	            } else {
	                if (savedValue)
	                    return $filter('propertyFilter')(instance.availableEmailProviders, { 'value': savedValue })[0];
	                return $filter('propertyFilter')(instance.availableEmailProviders, { "sortValue": sortValue })[0];

	            }
	        }
	        //Init available Email Providers
	        instance.availableEmailProviders = [];
	        Object.keys(advansedDnsModelService.availableEmailProviders).forEach(function (element) {
	            if ($scope.pageBehavior.model.Info.DnsProviderType != advansedDnsModelService.DNSProviderSubType.ENOM || ($scope.pageBehavior.model.Info.DnsProviderType == advansedDnsModelService.DNSProviderSubType.ENOM
                    && advansedDnsModelService.availableEmailProviders[element].sortValue != advansedDnsModelService.availableEmailProviders.GMAIL.sortValue)) {
	                instance.availableEmailProviders.push(advansedDnsModelService.availableEmailProviders[element]);
	            }
	        });
	        instance.availableEmailProviders = $filter('orderBy')(instance.availableEmailProviders, 'sortValue');

	        //Init available TtlTypes for record
	        instance.availableTtlTypes = [];
	        Object.keys(advansedDnsModelService.availableTtlTypes).forEach(function (element) {
	            instance.availableTtlTypes.push(advansedDnsModelService.availableTtlTypes[element]);
	        });
	        instance.availableTtlTypes = $filter('orderBy')(instance.availableTtlTypes, 'sortValue');

	        instance.savedEmailEmailProvider = angular.copy(getEmailEmailProvider($scope.pageBehavior.model.Info.EmailProviderType));
	        instance.selectedEmailProvider = angular.copy(instance.savedEmailEmailProvider);
	        instance.emailProviderSelectedValue = instance.savedEmailEmailProvider.sortValue;

	        $timeout(function () {
	            instance.emailProviderSelectedValue = instance.savedEmailEmailProvider.sortValue.toString();
	        });

	        instance.onEmailProviderChange = function () {
	            instance.selectedEmailProvider = getEmailEmailProvider(null, instance.emailProviderSelectedValue);
	            instance.newRecords = [];
	            instance.ncGrid.settings.reload();
	        }

	        var getListRecords = function () {
	            var customRecords = $scope.pageBehavior.model.CustomHostRecords.Records;
	            var result = [];
	            if (instance.selectedEmailProvider.value == advansedDnsModelService.availableEmailProviders.NONE.value
                    || instance.selectedEmailProvider.value == advansedDnsModelService.availableEmailProviders.OX.value
                    || instance.selectedEmailProvider.value == advansedDnsModelService.availableEmailProviders.GMAIL.value) {
	                return result;
	            } else if (instance.selectedEmailProvider.value == advansedDnsModelService.availableEmailProviders.FWD.value) {
	                instance.newRecords = [];
	                instance.notSavedRecords = [];
	                instance.availableRecordTypes = [];
	                instance.availableRecordTypes.push(advansedDnsModelService.recordTypes.TXT);
	                for (var i = 0; i < customRecords.length; i++) {
	                    if (customRecords[i].EmailProvider == advansedDnsModelService.availableEmailProviders.FWD.value && customRecords[i].RecordType == advansedDnsModelService.realHostType.TXT) {
	                        result.push(createRecordBehavior(customRecords[i], $scope.mailSettingsList, $scope.listType.mailSettings));
	                    }
	                }
	                if (result.length == 0) {
	                    function addDefault(toResult) {
	                        var defaultRecords = $scope.pageBehavior.DefaultEmailProviderRecords.FWD.Records;
	                        for (var t = 0; t < defaultRecords.length; t++) {
	                            if (defaultRecords[t].RecordType == advansedDnsModelService.realHostType.TXT) {
	                                var defaultRecord = createRecordBehavior(defaultRecords[t], $scope.mailSettingsList, $scope.listType.mailSettings);
	                                defaultRecord.model.ReadOnly = $scope.lockType.locked;
	                                if (toResult) {
	                                    result.push(defaultRecord);
	                                } else {
	                                    instance.ncGrid.settings.actions.addNewItem(defaultRecord);
	                                    if (!$scope.$$phase) $scope.$apply();
	                                }
	                            }
	                        }
	                    }

	                    if ($scope.pageBehavior.DefaultEmailProviderRecords == null) {
	                        $scope.$watch('pageBehavior.DefaultEmailProviderRecords', function (newvalue, oldValue) {
	                            if (newvalue != oldValue) {
	                                addDefault(false);

	                            }
	                        });
	                    } else {
	                        addDefault(true);
	                    }
	                }
	            } else if (instance.selectedEmailProvider.value == advansedDnsModelService.availableEmailProviders.MXE.value) {
	                instance.newRecords = [];
	                instance.notSavedRecords = [];
	                instance.availableRecordTypes = [];

	                instance.availableRecordTypes.push(advansedDnsModelService.recordTypes.MXE);
	                for (var i = 0; i < customRecords.length; i++) {
	                    if (customRecords[i].RecordType == advansedDnsModelService.realHostType.MXE) {
	                        result.push(createRecordBehavior(customRecords[i], $scope.mailSettingsList, $scope.listType.mailSettings));
	                    }
	                }
	                if (result.length == 0) {
	                    var defaultMxe = createRecordBehavior(null, $scope.mailSettingsList, $scope.listType.mailSettings)
	                    instance.newRecords.push(defaultMxe);
	                    instance.notSavedRecords.push(defaultMxe);

	                }
	            } else if (instance.selectedEmailProvider.value == advansedDnsModelService.availableEmailProviders.MX.value) {
	                instance.newRecords = [];
	                instance.notSavedRecords = [];
	                instance.availableRecordTypes = [];
	                instance.availableRecordTypes.push(advansedDnsModelService.recordTypes.MX);

	                for (var i = 0; i < customRecords.length; i++) {
	                    if (customRecords[i].RecordType == advansedDnsModelService.realHostType.MX) {
	                        result.push(createRecordBehavior(customRecords[i], $scope.mailSettingsList, $scope.listType.mailSettings));
	                    }
	                }
	                if (result.length == 0) {
	                    var defaultMx = createRecordBehavior(null, $scope.mailSettingsList, $scope.listType.mailSettings);
	                    instance.newRecords.push(defaultMx);
	                    instance.notSavedRecords.push(defaultMx);

	                }
	            }

	            return result;
	        }
	        ncGridConstructor(instance);
	        instance.ncGrid.eventListener.then(function (eventScope) {
	            eventScope.$on(ncGridEventNames.ncGridRenderPageAfter, function (event, parameters) {
	                if (instance.ncGrid.parameters.storage.isEmpty && instance.newRecords.length == 1
                        && $scope.pageBehavior.domainDnsStatus == $scope.domainDnsStatus.Default || ($scope.pageBehavior.domainTransferRights.IsHostsMails && $scope.pageBehavior.domainDnsStatus == $scope.domainDnsStatus.TransferRights)) {
	                    $scope.checkMobileAction(instance.newRecords[0]);
	                }
	                instance.updateActionAcsses();
	            });
	        });
	        instance.ncGrid.settings.getData = function ($defer, ncGridState) {
	            $defer.resolve({ Data: getListRecords() });
	        }


	        actionConstructor(instance, $scope.listType.mailSettings);

	        instance.updateActionAcsses = function () {
	            if (instance.savedEmailEmailProvider.value != instance.selectedEmailProvider.value) {
	                instance.actionAcsses.canSaveAll = true;
	                instance.actionAcsses.canSaveOne = false;
	            } else {
	                instance.actionAcsses.canSaveAll = false;
	                instance.actionAcsses.canSaveOne = true;
	            }

	            instance.actionAcsses.canCancel = instance.ncGrid.parameters.storage.requestData.length > 0 &&
                    instance.ncGrid.parameters.storage.requestData[0].savedModel != null;

	            instance.actionAcsses.canRemove = instance.selectedEmailProvider.value == advansedDnsModelService.availableEmailProviders.MX.value &&
                    instance.ncGrid.parameters.storage.requestData.length > 1;;
	            instance.actionAcsses.canAddNew = instance.selectedEmailProvider.value == advansedDnsModelService.availableEmailProviders.MX.value &&
                    instance.ncGrid.parameters.storage.requestData.length > 0;
	        }

	        instance.updateGridAfterSaveAll = function (result) {
	            instance.ncGrid.parameters.mapping.isLoading = false;
	            $scope.pageBehavior.model = result.Result;
	            instance.savedEmailEmailProvider = angular.copy(getEmailEmailProvider($scope.pageBehavior.model.Info.EmailProviderType));
	            instance.savedEmailEmailProvider = angular.copy(instance.selectedEmailProvider);
	            instance.ncGrid.settings.reload();
	            instance.updateActionAcsses();
	            instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(DomainDnsValidation.success_Contextual_MailSettingSuccess, {
	                hasClose: true,
	                isAutoHide: true
	            });
	        }

	        instance.saveAll = function () {
	            if (!instance.actionAcsses.canSaveOne && instance.actionAcsses.canSaveAll) {
	                var requestList = [];
	                instance.activeNotification = null;

	                function pushItem(item) {
	                    if (item.recordState == $scope.recordState.creating && item.editModel.canSave()) {
	                        requestList.push(item.editModel.getRealModel());
	                    } else if (item.recordState == $scope.recordState.editing && item.editModel.canSave()) {
	                        requestList.push(item.editModel.getRealModel());
	                    } else if (item.recordState == $scope.recordState.active) {
	                        requestList.push(item.recordModel);
	                    }
	                }

	                for (var i = 0; i < instance.ncGrid.parameters.storage.requestData.length; i++) {
	                    pushItem(instance.ncGrid.parameters.storage.requestData[i]);
	                }
	                for (var i = 0; i < instance.newRecords.length; i++) {
	                    pushItem(instance.newRecords[i]);
	                }

	                if (requestList.length == 0 && (instance.selectedEmailProvider.value == advansedDnsModelService.availableEmailProviders.MX.value || instance.selectedEmailProvider.value == advansedDnsModelService.availableEmailProviders.MX.value)) {
	                    return;
	                }
	                instance.ncGrid.parameters.mapping.isLoading = true;
	                $timeout(function () {
	                    function actionFn(actionRequestList, queueDefer) {
	                        httpRepository.domainAdvancedDNS.updateEmailType($scope.pageBehavior.domainName, instance.selectedEmailProvider.value, actionRequestList).then(function (result) {
	                            instance.ncGrid.parameters.mapping.isLoading = false;
	                            if (result.Error == false) {
	                                instance.updateGridAfterSaveAll(result);
	                            } else {
	                                instance.newRecords[0].asyncStatus(pageHelper.AsyncStatus.Error, { sender: "saveAll", Msg: result.Msg })
	                            }
	                        });
	                        queueDefer.resolve();
	                    }

	                    if (requestList.length > 0 || (instance.selectedEmailProvider.value != advansedDnsModelService.availableEmailProviders.MX.value ||
                            instance.selectedEmailProvider.value != advansedDnsModelService.availableEmailProviders.MXE.value ||
                            instance.selectedEmailProvider.value != advansedDnsModelService.availableEmailProviders.TXT.value)) {
	                        $scope.actionQueue.push(actionFn, [requestList]);
	                    } else {
	                        instance.ncGrid.parameters.mapping.isLoading = false;
	                    }

	                });

	            } else {
	                instance.saveRecords(instance.notSavedRecords);
	            }
	        }

	    }

	    //#endregion

	    //#region DYNAMIC DNS
	    function dynamicDnsListConstructor() {
	        var instance = $scope.dynamicDnsList;
	        instance.listType = $scope.listType.dynamicDns;

	        function checkDnsStatus() {
	            httpRepository.domainAdvancedDNS.getDynamicRecords($scope.pageBehavior.domainName).then(function (result) {
	                if (result.Error == false) {
	                    instance.dnsStatus = result.Result.DDNSPassword != "";
	                    if (instance.dnsStatus) {
	                        instance.ncGrid.settings.reload();
	                        instance.dnsPassword = result.Result.DDNSPassword;
	                        if ($scope.pageBehavior.model.DynDnsDetails.SystemRequirements)
	                            instance.dynDnsSoftName = $scope.pageBehavior.model.DynDnsDetails.SystemRequirements[0];
	                    }
	                }
	            });
	        }

	        checkDnsStatus();
	        instance.resetKey = function () {
	            var activeModalInstance = $modal.open({
	                templateUrl: "/Common/PromptRemove",
	                controller: 'promptRemoveModalCtrl',
	                size: 'lg',
	                resolve: {
	                    modalTitle: function () {
	                        return "Please reset DDNS Password";
	                    },
	                    modalContent: function () {
	                        return "You are about to reset your password. To avoid interruption of service, you must update ALL the locations that require this password to log in. Do you wish to continue? [Yes/No]";
	                    }
	                }
	            });
	            activeModalInstance.result.then(function (msg) {
	                httpRepository.domainAdvancedDNS.resetDnsPassword($scope.pageBehavior.domainName).then(function (result) {
	                    if (result.Error == false) {
	                        instance.dnsPassword = result.Msg;
	                    }
	                });
	                activeModalInstance = null;
	            }, function () {
	                activeModalInstance = null;
	            });
	        }
	        instance.showMoreLess = showMoreLessConstructor(instance.ncGrid);
	        ncGridConstructor(instance);
	        instance.ncGrid.settings.getData = function ($defer, ncGridState) {
	            var customRecords = $scope.pageBehavior.model.CustomHostRecords.Records;
	            var result = [];
	            for (var i = 0; i < customRecords.length; i++) {
	                if (customRecords[i].EmailProvider == null &&
                        customRecords[i].RecordType == advansedDnsModelService.realHostType.A &&
                        customRecords[i].IsDynDns == true) {
	                    result.push(createRecordBehavior(customRecords[i], $scope.dynamicDnsList, $scope.listType.dynamicDns));
	                }
	            }
	            $defer.resolve({ Data: result });
	        }

	        //instance.dnsStatus = $scope.pageBehavior.model.DynDnsOverviewModel.DNSDetails.DynamicDNSStatus;
	        instance.onChangeDnsStatus = function () {
	            instance.dnsStatus = !instance.dnsStatus;
	            if (!instance.dnsStatus) {
	                httpRepository.domainAdvancedDNS.turnOnDns($scope.pageBehavior.domainName).then(function (result) {
	                    if (result.Error == false) {
	                        instance.ncGrid.settings.reload();
	                        instance.dnsStatus = !instance.dnsStatus;
	                        checkDnsStatus();
	                    }
	                });
	            } else {
	                httpRepository.domainAdvancedDNS.turnOffDns($scope.pageBehavior.domainName).then(function (result) {
	                    if (result.Error == false) {
	                        instance.dnsStatus = !instance.dnsStatus;
	                    }
	                });
	            }
	        }

	        actionConstructor(instance, $scope.listType.dynamicDns);

	        //Init available RecordTypes for grid
	        instance.availableRecordTypes = [];
	        instance.availableRecordTypes.push(advansedDnsModelService.recordTypes.AdDns);

	        //Init available TtlTypes for record
	        instance.availableTtlTypes = [];
	        Object.keys(advansedDnsModelService.availableTtlTypes).forEach(function (element) {
	            instance.availableTtlTypes.push(advansedDnsModelService.availableTtlTypes[element]);
	        });
	        instance.availableTtlTypes = $filter('orderBy')(instance.availableTtlTypes, 'sortValue');
	    }

	    //#endregion

	    function createRecordBehavior(recordModel, recordsListBehavior, listType) {
	        return new pageHelper.AsyncStateBehavior({
	            constructor: function () {
	                var instance = this.instance;
	                instance.recordsListBehavior = recordsListBehavior;
	                instance.listType = listType;
	                instance.model = {};
	                instance.editModel = {};
	                instance.recordModel = angular.copy(recordModel);

	                if (instance.recordModel != null) {
	                    instance.recordType = advansedDnsModelService.getRestrictedRecordType(instance.recordModel);
	                    instance.model = advansedDnsModelService[instance.recordType.type].viewModel(angular.copy(instance.recordModel));
	                    instance.savedModel = angular.copy(instance.model);
	                    instance.recordState = $scope.recordState.active;
	                } else {
	                    instance.recordType = recordsListBehavior.availableRecordTypes[0];
	                    instance.editModel = advansedDnsModelService[instance.recordType.type].editModel(null, instance.savedModel);

	                    if (listType == $scope.listType.hostRecords) {
	                        instance.editModel.HostId = -1;
	                    }
	                    instance.recordState = $scope.recordState.creating;
	                }
	                instance.setFocus = function (focusValue) {
	                    if (focusValue != null && (listType == $scope.listType.hostRecords || (listType != $scope.listType.hostRecords && focusValue != "recordType"))) {
	                        instance.focusValues[focusValue] = true;
	                    } else {
	                        if (listType == $scope.listType.hostRecords) {
	                            instance.focusValues['recordType'] = true;
	                        } else {
	                            instance.focusValues['host'] = true;
	                        }

	                    }
	                }


	                instance.editRecord = function (checkLockedTooltip, e, isMobile, focusValue) {
	                    if (checkLockedTooltip && (instance.model.ReadOnly == $scope.lockType.readOnly || instance.model.ReadOnly == $scope.lockType.locked) &&
                            $scope.isPromtEditRecord || instance.recordState != $scope.recordState.active) {

	                        if ($scope.isMobile() && !isMobile && e != null) {
	                            $timeout(function () {
	                                var closeElements = angular.element(".editTooltip");
	                                for (var i = 0; i < closeElements.length; i++) {
	                                    angular.element(closeElements[i].closest(".is-active")).removeClass("is-active");
	                                }
	                            });
	                        }
	                        return;
	                    }
	                    if (e) {
	                        angular.element(e.target).closest(".is-active").removeClass("is-active");
	                    }
	                    if ($scope.isMobile() && !isMobile) {
	                        return;
	                    }
	                    instance.asyncStatus(pageHelper.AsyncStatus.Active);
	                    instance.editModel = advansedDnsModelService[instance.recordType.type].editModel(null, angular.copy(instance.recordModel));
	                    instance.editModel.recordModel = instance.recordModel;
	                    instance.recordState = $scope.recordState.editing;
	                    recordsListBehavior.notSavedRecords.push(instance);
	                    instance.focusValues = angular.copy(instance.recordType.focusedFields);


	                    if (!isMobile && $window.innerWidth > 1023) {
	                        instance.setFocus(focusValue);
	                    }
	                    $scope.checkMobileAction(instance);

	                }

	                instance.onRecordTypeChange = function () {
	                    var keys = Object.keys(advansedDnsModelService.recordTypes);
	                    for (var i = 0; i < keys.length; i++) {
	                        if (advansedDnsModelService.recordTypes[keys[i]].sortValue == instance.editModel.selectedRecordTypeValue) {
	                            instance.recordType = advansedDnsModelService.recordTypes[keys[i]];
	                            break;
	                        }
	                    }
	                    instance.editModel = advansedDnsModelService[instance.recordType.type].editModel(instance.editModel, (instance.recordModel != null) ? angular.copy(instance.recordModel) : null);
	                }

	                instance.removeFromNotSavedRecords = function () {
	                    var index = recordsListBehavior.notSavedRecords.indexOf(instance);
	                    recordsListBehavior.notSavedRecords.splice(index, 1);
	                }
	                instance.removeFromNewRecords = function () {
	                    var index = recordsListBehavior.newRecords.indexOf(instance);
	                    recordsListBehavior.newRecords.splice(index, 1);
	                }

	                instance.cancelRecord = function () {
	                    instance.removeFromNotSavedRecords();
	                    if (instance.recordState == $scope.recordState.creating) {
	                        angular.element(".cancel.ng-scope").mouseleave();
	                        instance.removeFromNewRecords();
	                    } else {
	                        instance.recordType = advansedDnsModelService.getRestrictedRecordType(instance.recordModel);
	                        instance.model = advansedDnsModelService[instance.recordType.type].viewModel(angular.copy(instance.recordModel));
	                        instance.savedModel = angular.copy(instance.model);
	                        instance.recordState = $scope.recordState.active;
	                        instance.asyncStatus(pageHelper.AsyncStatus.Active);
	                    }
	                    if (instance.listType == $scope.listType.mailSettings) {
	                        recordsListBehavior.selectedEmailProvider = angular.copy(recordsListBehavior.savedEmailEmailProvider);
	                        recordsListBehavior.emailProviderSelectedValue = recordsListBehavior.savedEmailEmailProvider.sortValue;
	                        if (recordsListBehavior.ncGrid.parameters.storage.requestData.length == 0 && recordsListBehavior.newRecords.length == 0) {
	                            recordsListBehavior.ncGrid.settings.reload();
	                        }
	                    }

	                }
	                instance.saveRecord = function () {
	                    recordsListBehavior.saveRecords([instance]);
	                }
	                instance.removeRecord = function (e) {
	                    if (e) {
	                        angular.element(e.target).closest(".is-active").removeClass("is-active");
	                    }
	                    recordsListBehavior.removeRecords([instance]);
	                }
	            },
	            onSuccess: function (params) {
	                var instance = this.instance;
	                if (params.sender == "add" || params.sender == "update") {
	                    instance.removeFromNotSavedRecords();
	                    if (instance.recordState == $scope.recordState.creating) {
	                        instance.removeFromNewRecords();
	                    }
	                    if (params.Result.length > 0) {
	                        instance.recordModel = angular.copy(params.Result[0]);
	                        instance.recordType = advansedDnsModelService.getRestrictedRecordType(instance.recordModel);
	                        instance.model = advansedDnsModelService[instance.recordType.type].viewModel(angular.copy(instance.recordModel));
	                        instance.savedModel = angular.copy(instance.model);
	                        instance.recordState = $scope.recordState.active;
	                        if (params.sender == "add") {
	                            recordsListBehavior.ncGrid.settings.actions.addNewItem(instance);
	                        } else if (instance.recordType.sortValue == advansedDnsModelService.recordTypes.AdDns.sortValue) {
	                            $scope.$broadcast("updateA+DynamicDNSRecord", { item: instance, listType: listType });
	                        }
	                    }
	                    setTimeout(function () {
	                        instance.asyncStatus(pageHelper.AsyncStatus.Active);
	                        if (!$scope.$$phase) {
	                            $scope.$apply();
	                        }
	                    }, notificationService.notificationTimeLine.success);
	                } else if (params.sender == "doNotNeedUpdate") {
	                    instance.recordState = $scope.recordState.active;
	                    setTimeout(function () {
	                        instance.asyncStatus(pageHelper.AsyncStatus.Active);
	                        if (!$scope.$$phase) {
	                            $scope.$apply();
	                        }
	                    }, notificationService.notificationTimeLine.success);

	                } else if (params.sender == "remove") {
	                    instance.removeFromNotSavedRecords();
	                    recordsListBehavior.ncGrid.settings.actions.removeItem(instance);
	                }

	                if (listType == $scope.listType.mailSettings) {
	                    recordsListBehavior.updateActionAcsses();
	                }
	            },
	            onActive: function (params) {
	                var instance = this.instance;
	            },
	            onLoading: function (params) {
	                var instance = this.instance;
	            },
	            onLocked: function (params) {
	                var instance = this.instance;
	            },
	            onError: function (params) {
	                var instance = this.instance;
	                instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
	                    hasClose: true,
	                    isAutoHide: true
	                });
	                setTimeout(function () {
	                    instance.asyncStatus(pageHelper.AsyncStatus.Active);
	                    if (!$scope.$$phase) {
	                        $scope.$apply();
	                    }

	                }, notificationService.notificationTimeLine.error);
	            }
	        });
	    }

	    //#region PERSONAL DNS SERVER

	    function createPersonalDnsConstructor() {
	        var instance = $scope.personalDnsList;
	        instance.listType = $scope.listType.personalDnsServer;
	        ncGridConstructor(instance);

	        instance.nameServerTypes = [{ name: "Standard Nameservers", value: 0 }, { name: "Custom Nameservers", value: 1 }];

	        $timeout(function () {
	            instance.selectedNameServerTypeValue = instance.nameServerTypes[0].value.toString();
	        });
	        instance.search = function () {
	            instance.neverSearch = false;
	            instance.ncGrid.settings.reload();
	        }

	        instance.defaultNsServers = [
                { id: 'ns1', text: 'ns1' }, { id: 'ns2', text: 'ns2' }, { id: 'ns3', text: 'ns3' }, { id: 'ns4', text: 'ns4' }, { id: 'ns5', text: 'ns5' }, { id: 'ns6', text: 'ns6' },
                { id: 'ns7', text: 'ns7' }, { id: 'ns8', text: 'ns8' }, { id: 'ns9', text: 'ns9' }, { id: 'dns1', text: 'dns1' }, { id: 'dns2', text: 'dns2' }, { id: 'dns3', text: 'dns3' },
                { id: 'dns4', text: 'dns4' }, { id: 'dns6', text: 'dns6' }, { id: 'dns7', text: 'dns7' }, { id: 'dns8', text: 'dns8' }, { id: 'dns9', text: 'dns9' }
	        ];

	        $timeout(function () {
	            angular.element(".nameservers-select").select2({
	                dropdownCssClass: 'small',
	                placeholder: "Nameserver",
	                data: instance.defaultNsServers,
	                allowClear: false,
	                maximumInputLength: 63,
	                formatResult: function (item) {
	                    return item.html != undefined ? item.html : item.text;
	                },
	                createSearchChoice: function (term, data) {
	                    if (term.indexOf(' ') >= 0) {
	                        return null;
	                    }
	                    if ($(data).filter(function () {
                            return this.text.localeCompare(term) === 0;
	                    }).length === 0) {
	                        return { id: term, text: term };
	                    }
	                }
	            });
	            angular.element(".nameservers-select").on("change", function (e) {
	                instance.addPersonalDnsModel.Host = e.val;
	                $scope.addPersonalDnsForm.personalDnsNsServerName.$setDirty();
	                if ($scope.$$phase == null) {
	                    $scope.$apply();
	                }
	            });
	        });

	        instance.addNameservers = function () {
	            instance.addNameServerMsg = null;
	            if ($scope.addPersonalDnsForm.$valid && instance.addPersonalDnsModel.Host != null) {
	                instance.processingAddNameServer = true;

	                function actionFn(addPersonalDnsModel, queueDefer) {
	                    httpRepository.domainAdvancedDNS.nameServerAdd(addPersonalDnsModel).then(function (result) {
	                        instance.processingAddNameServer = false;
	                        if (result.Error == false) {
	                            instance.addNameServerMsg = $scope.pageNotification.stuckNotifications.addSuccess(DomainDnsInfoRes.success_AddNS, {
	                                hasClose: true,
	                                isAutoHide: true
	                            });
	                            instance.cancelNameservers();
	                        } else {
	                            instance.addNameServerMsg = $scope.pageNotification.stuckNotifications.addError(DomainDnsInfoRes.error_AddNameserversError, {
	                                hasClose: true,
	                                isAutoHide: true
	                            });
	                        }
	                        queueDefer.resolve();
	                    });

	                }

	                $timeout(function () {
	                    $scope.actionQueue.push(actionFn, [instance.addPersonalDnsModel]);
	                });
	            } else {
	                angular.forEach($scope.addPersonalDnsForm.$error.required, function (field) {
	                    field.$setDirty();
	                });
	            }
	        };
	        instance.cancelNameservers = function () {
	            instance.setDefaultPersonalDnsModel();
	            angular.element(".nameservers-select").val(null).trigger("change");
	            angular.element(".addNameserver").closest(".is-active").removeClass("is-active");
	            $scope.addPersonalDnsForm.$setPristine();
	        }
	        instance.addPersonalDnsModel = {};
	        instance.addPersonalDnsModel.Domainname = $scope.pageBehavior.domainName;
	        instance.addPersonalDnsModel.Host = null;

	        instance.setDefaultPersonalDnsModel = function () {
	            instance.addPersonalDnsModel.Domainname = $scope.pageBehavior.domainName;
	            instance.addPersonalDnsModel.Host = null;
	            instance.addPersonalDnsModel.Ip = "";
	            instance.showTooltip = false;
	        };

	        instance.removeRecords = function (itemList) {
	            instance.activeNotification = null;
	            if (itemList == null || itemList.length == 0) {
	                instance.activeNotification = $scope.pageNotification.stuckNotifications.addWarning(bulcIsEmpty, {
	                    hasClose: true,
	                    isAutoHide: true
	                });
	                return;
	            }

	            function actionFn(currentItem, queueDefer) {
	                httpRepository.domainAdvancedDNS.nameServerDelete($scope.pageBehavior.domainName, currentItem.model.Nameserver).then(function (result) {
	                    result.sender = "remove";
	                    currentItem.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
	                    queueDefer.resolve();
	                });
	            }

	            for (var index = 0; index < itemList.length; index++) {
	                itemList[index].asyncStatus(pageHelper.AsyncStatus.Loading);
	                $scope.actionQueue.push(actionFn, [itemList[index]]);
	            }
	        }

	        instance.ncGrid.settings.getData = function ($defer, ncGridState) {
	            httpRepository.domainAdvancedDNS.nameServerSearch(ncGridState, $scope.pageBehavior.domainName, (instance.selectedNameServerTypeValue == "1") ? instance.hostSearchValue : "").then(function (result) {
	                if (result.Error == false) {
	                    var resultList = [];
	                    result.Result.Data.forEach(function (element) {
	                        resultList.push(createPersonalDnsItemBehavior(element, instance));
	                    });
	                    $defer.resolve({ Data: resultList });
	                } else {
	                    $defer.resolve({ Data: [] });
	                }
	            });
	        }
	        instance.ncGrid.parameters.mapping.isLoading = false;
	        instance.ncGrid.parameters.mapping.isPageFull = true;
	        showMoreLessConstructor(instance.ncGrid);
	        instance.neverSearch = true;

	    }

	    function createPersonalDnsItemBehavior(recordModel, listBehavior) {
	        return new pageHelper.AsyncStateBehavior({
	            constructor: function () {
	                var instance = this.instance;
	                instance.model = recordModel;
	                instance.savedModel = angular.copy(recordModel);
	                instance.recordState = $scope.recordState.active;

	                function getEditModel() {
	                    var editModel = angular.copy(recordModel);
	                    return editModel;
	                }


	                instance.editRecord = function (checkLockedTooltip, e, isMobile) {
	                    if (instance.recordState != $scope.recordState.active) {
	                        return;
	                    }
	                    if (e) {
	                        angular.element(e.target).closest(".is-active").removeClass("is-active");
	                    }
	                    if ($window.innerWidth <= 1023 && isMobile == null) {
	                        return;
	                    }
	                    instance.editModel = getEditModel();
	                    instance.recordState = $scope.recordState.editing;
	                    if (!isMobile) {
	                        instance.focusOn = true;
	                    } else {
	                        var activeModalInstance = $modal.open({
	                            templateUrl: httpRepository.domainAdvancedDNS.getAdvancedDNSUpdatePersonalDnsServerModal,
	                            controller: 'advancedDNSUpdatePersonalDnsServerModalCtrl',
	                            size: 'lg',
	                            resolve: {
	                                listItem: function () {
	                                    return instance;
	                                },
	                                domainName: function () {
	                                    return $scope.pageBehavior.domainName;
	                                }
	                            }
	                        });
	                        activeModalInstance.result.then(function (msg) {
	                            instance.cancelRecord();
	                            activeModalInstance = null;
	                        }, function () {
	                            instance.cancelRecord();
	                            activeModalInstance = null;
	                        });
	                    }
	                }

	                instance.saveRecord = function () {
	                    if (instance.valueForm.$valid) {
	                        instance.asyncStatus(pageHelper.AsyncStatus.Loading);

	                        if (instance.savedModel.IP != instance.editModel.IP) {
	                            httpRepository.domainAdvancedDNS.nameServerUpdate($scope.pageBehavior.domainName, instance.savedModel.Nameserver, instance.savedModel.IP, instance.editModel.IP).then(function (result) {
	                                result.sender = "update";
	                                instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
	                            });
	                        } else {
	                            instance.asyncStatus(pageHelper.AsyncStatus.Success, { sender: "doNotNeedUpdate" });
	                        }

	                    } else {
	                        angular.forEach(instance.valueForm.$error.required, function (field) {
	                            field.$setDirty();
	                        });
	                    }
	                }

	                instance.removeRecord = function (e) {
	                    if (e) {
	                        angular.element(e.target).closest(".is-active").removeClass("is-active");
	                    }
	                    listBehavior.removeRecords([instance]);
	                }

	                instance.cancelRecord = function () {
	                    instance.recordState = $scope.recordState.active;
	                }
	            },
	            onSuccess: function (params) {
	                var instance = this.instance;
	                if (params.sender == "update") {
	                    instance.recordState = $scope.recordState.active;
	                    instance.model.IP = instance.editModel.IP;
	                    instance.savedModel = angular.copy(recordModel);
	                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(DomainDnsInfoRes.success_AddNS, {
	                        hasClose: true,
	                        isAutoHide: true
	                    });

	                    setTimeout(function () {
	                        instance.asyncStatus(pageHelper.AsyncStatus.Active);
	                        if (!$scope.$$phase) {
	                            $scope.$apply();
	                        }
	                    }, notificationService.notificationTimeLine.success);
	                } else if (params.sender == "doNotNeedUpdate") {
	                    instance.recordState = $scope.recordState.active;
	                    setTimeout(function () {
	                        instance.asyncStatus(pageHelper.AsyncStatus.Active);
	                        if (!$scope.$$phase) {
	                            $scope.$apply();
	                        }

	                    }, notificationService.notificationTimeLine.success);
	                } else if (params.sender == "remove") {
	                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(
                            $filter('stringFormat')("{0} successfully removed", [instance.model.Nameserver]), {
                                hasClose: true,
                                isAutoHide: true
                            });
	                    listBehavior.ncGrid.settings.actions.removeItem(instance);
	                }
	            },
	            onActive: function (params) {
	                var instance = this.instance;
	            },
	            onLoading: function (params) {
	                var instance = this.instance;
	            },
	            onLocked: function (params) {
	                var instance = this.instance;
	            },
	            onError: function (params) {
	                var instance = this.instance;
	                var msg = null;
	                if (params.sender == "update") {
	                    msg = DomainDnsInfoRes.error_UpdateNameserversError;
	                } else {
	                    msg = $filter('stringFormat')(DomainDnsInfoRes.static_DeleteDynamicErrorMessage, [instance.model.Nameserver]);
	                }
	                instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(msg, {
	                    hasClose: true,
	                    isAutoHide: true
	                });
	                setTimeout(function () {
	                    instance.asyncStatus(pageHelper.AsyncStatus.Active);
	                    if (!$scope.$$phase) {
	                        $scope.$apply();
	                    }
	                }, notificationService.notificationTimeLine.error);
	            }
	        });
	    }


	    //#endregion

	    //#region DNSSEC

	    function createDnsSecConstructor() {
	        var instance = $scope.dnsSecList;
	        instance.listType = $scope.listType.dnsSec;
	        instance.viewTemplatePath = "advancedDns_dnsSecRecord_view";
	        instance.editTemplatePath = "advancedDns_dnsSecRecord_edit";
	        ncGridConstructor(instance);
	        actionConstructor(instance, $scope.listType.dnsSec);
	        instance.showMoreLess = showMoreLessConstructor(instance.ncGrid);
	        instance.processing = false;
	        function isFullAvailable() {
	            return $scope.pageBehavior.model.DnsSecModel.IsAvailable && !$scope.isDomainLocked;
	        }

	        function isShowGrid() {
	            return ($scope.pageBehavior.domainDnsStatus == $scope.domainDnsStatus.CustomServerType || $scope.pageBehavior.domainDnsStatus == $scope.domainDnsStatus.SharedServerType) && instance.dnsSecStatus;
	        }

	        function destroyActiveNotification() {
	            if (instance.activeNotification) {
	                instance.activeNotification.destroy();
	            }
	        }

	        instance.updateActionAcsses = function () {
	            instance.actionAcsses.canRemove = $scope.pageBehavior.model.DnsSecModel.Records.length > 1;
	            instance.actionAcsses.canCancel = $scope.pageBehavior.model.DnsSecModel.Records.length >= 1 || (instance.newRecords.length == 1 && $scope.pageBehavior.model.DnsSecModel.Records.length >= 1);
	        }

	        instance.accessToFunctionalityOfEditing = $scope.pageBehavior.model.Info.DnsProviderType != advansedDnsModelService.DNSProviderSubType.FREE2 &&
                $scope.pageBehavior.model.Info.DnsProviderType != advansedDnsModelService.DNSProviderSubType.ENOM && $scope.pageBehavior.domainDnsStatus != $scope.domainDnsStatus.SharedServerType;


	        instance.dnsSecStatus = $scope.pageBehavior.model.DnsSecModel.IsEnabled;
	        instance.dnsSecStatusLocked = isFullAvailable();
	        instance.onChangeDnsSecStatus = function () {
	            destroyActiveNotification();

	            if ($scope.pageBehavior.model.DnsSecModel.Records.length == 0 && instance.dnsSecStatus && isShowGrid()) {
	                $scope.pageBehavior.model.DnsSecModel.IsEnabled = instance.dnsSecStatus;
	                $scope.dnsSecList.ncGrid.settings.reload().then(function () {
	                    instance.updateActionAcsses();
	                });
	                //instance.activeNotification = $scope.pageNotification.stuckNotifications.addWarning("For enable DNSSEC at least one record should be present.", {
	                //  hasClose: true,
	                //  isAutoHide: true
	                //});
	            } else {
	                instance.processing = true;
	                httpRepository.domainAdvancedDNS.enableDomainDnsSec($scope.pageBehavior.domainName, instance.dnsSecStatus).then(function (result) {
	                    instance.processing = false;
	                    if (!result.Error) {
	                        $scope.pageBehavior.model.DnsSecModel.IsEnabled = instance.dnsSecStatus;
	                        if (instance.newRecords.length > 0) {
	                            for (var newNotSavedIndex = 0; newNotSavedIndex < instance.newRecords.length; newNotSavedIndex++)
	                            {
	                                instance.newRecords[newNotSavedIndex].removeFromNewRecords();
	                            }
	                        }
	                        if (instance.notSavedRecords.length > 0)
	                        {
	                            for (var editNotSavedIndex = 0; editNotSavedIndex < instance.newRecords.length; editNotSavedIndex++) {
	                                instance.newRecords[editNotSavedIndex].cancelRecord();
	                            }
	                        }

	                        if (isShowGrid()) {
	                            $scope.dnsSecList.ncGrid.settings.reload().then(function () {
	                                instance.updateActionAcsses();
	                            });
	                        }
	                        if ($scope.pageBehavior.domainDnsStatus != $scope.domainDnsStatus.SharedServerType || $scope.pageBehavior.domainDnsStatus != $scope.domainDnsStatus.CustomServerType) {
	                            instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess("All good! Request processed successfully", {
	                                hasClose: true,
	                                isAutoHide: true
	                            });
	                        }


	                    } else {
	                        instance.activeNotification = $scope.pageNotification.stuckNotifications.addError("Oops! Something went wrong. Please try again.", {
	                            hasClose: true,
	                            isAutoHide: false
	                        });
	                        instance.dnsSecStatus = !instance.dnsSecStatus;
	                    }
	                });
	            }
	        }

	        instance.ncGrid.settings.getData = function ($defer, ncGridState) {
	            var resultList = [];
	            for (var i = 0; i < $scope.pageBehavior.model.DnsSecModel.Records.length; i++) {
	                var item = $scope.pageBehavior.model.DnsSecModel.Records[i];
	                resultList.push(createDnsSecItemBehavior(item, instance));
	            }
	            if (resultList.length == 0 && instance.newRecords.length == 0) {
	                var defaultRecord = new createDnsSecItemBehavior(null, instance);
	                instance.newRecords.push(defaultRecord);
	                instance.notSavedRecords.push(defaultRecord);
	            }
	            $defer.resolve({ Data: resultList });

	        }

	        if (isShowGrid()) {
	            $scope.dnsSecList.ncGrid.settings.reload().then(function () {
	                instance.updateActionAcsses();
	            });
	        }
	        instance.addDnsSecRecord = function (e) {
	            instance.addRecord(e, new createDnsSecItemBehavior(null, instance));
	            instance.updateActionAcsses();
	        }


	    }

	    function createDnsSecItemBehavior(recordModel, recordsListBehavior) {
	        return new pageHelper.AsyncStateBehavior(
                   {
                       constructor: function () {
                           var instance = this.instance;
                           instance.recordsListBehavior = recordsListBehavior;
                           instance.focusValues = { keyTag: false, algorithm: false, digestType: false, digest: false };
                           instance.setFocus = function (focusValue) {
                               Object.keys(instance.focusValues).forEach(function (key) {
                                   instance.focusValues[key] = focusValue == key;
                               });
                               if (!focusValue) {
                                   instance.focusValues['keyTag'] = true;
                               }
                           }

                           instance.onAlgorithmTypeChange = function () {

                           }
                           instance.onDigestTypeChange = function () {

                           }

                           instance.model = {};
                           instance.editModel = {};
                           instance.recordModel = angular.copy(recordModel);

                           if (instance.recordModel != null) {
                               instance.model = advansedDnsModelService.DnsSec.viewModel(angular.copy(instance.recordModel));
                               instance.savedModel = angular.copy(instance.model);
                               instance.recordState = $scope.recordState.active;
                           } else {
                               instance.editModel = advansedDnsModelService.DnsSec.editModel(null, instance.savedModel);
                               instance.recordState = $scope.recordState.creating;
                           }

                           instance.editRecord = function (checkLockedTooltip, e, isMobile, focusValue) {
                               if (checkLockedTooltip && $scope.isPromtEditRecord || instance.recordState != $scope.recordState.active) {

                                   if ($scope.isMobile() && !isMobile && e != null) {
                                       $timeout(function () {
                                           var closeElements = angular.element(".editTooltip");
                                           for (var i = 0; i < closeElements.length; i++) {
                                               angular.element(closeElements[i].closest(".is-active")).removeClass("is-active");
                                           }
                                       });
                                   }
                                   return;
                               }
                               if (e) {
                                   angular.element(e.target).closest(".is-active").removeClass("is-active");
                               }
                               if ($scope.isMobile() && !isMobile) {
                                   return;
                               }
                               instance.asyncStatus(pageHelper.AsyncStatus.Active);
                               instance.editModel = advansedDnsModelService.DnsSec.editModel(instance.model, instance.savedModel);
                               instance.editModel.recordModel = instance.recordModel;
                               instance.recordState = $scope.recordState.editing;
                               recordsListBehavior.notSavedRecords.push(instance);
                               if (!isMobile && $window.innerWidth > 1023) {
                                   instance.setFocus(focusValue);
                               }
                               $scope.checkMobileAction(instance);

                           }

                           instance.removeFromNotSavedRecords = function () {
                               var index = recordsListBehavior.notSavedRecords.indexOf(instance);
                               recordsListBehavior.notSavedRecords.splice(index, 1);
                           }
                           instance.removeFromNewRecords = function () {
                               var index = recordsListBehavior.newRecords.indexOf(instance);
                               recordsListBehavior.newRecords.splice(index, 1);
                           }

                           instance.cancelRecord = function () {
                               instance.removeFromNotSavedRecords();
                               if (instance.recordState == $scope.recordState.creating) {
                                   angular.element(".cancel.ng-scope").mouseleave();
                                   instance.removeFromNewRecords();
                               } else {
                                   instance.recordModel = angular.copy(recordModel);
                                   instance.model = advansedDnsModelService.DnsSec.viewModel(angular.copy(instance.recordModel));
                                   instance.savedModel = angular.copy(recordModel);
                                   instance.recordState = $scope.recordState.active;
                                   instance.asyncStatus(pageHelper.AsyncStatus.Active);
                               }
                               recordsListBehavior.updateActionAcsses();
                           }
                           instance.saveRecord = function () {
                               if (instance.editModel.canSave()) {
                                   recordsListBehavior.saveRecords([instance]);
                               }
                           }
                           instance.removeRecord = function (e) {
                               if (e) {
                                   angular.element(e.target).closest(".is-active").removeClass("is-active");
                               }
                               recordsListBehavior.removeRecords([instance]);
                           }
                           instance.asyncStatus(pageHelper.AsyncStatus.Active);
                       },
                       onSuccess: function (params) {
                           var instance = this.instance;
                           var savedIndex = null;
                           function getDnsSecRecordIndex() {
                               for (var index = 0; index < $scope.pageBehavior.model.DnsSecModel.Records.length; index++) {
                                   var item = $scope.pageBehavior.model.DnsSecModel.Records[index];
                                   if (item.KeyTag == instance.recordModel.KeyTag && item.AlgorythmType == instance.recordModel.AlgorythmType && item.DigestType == instance.recordModel.DigestType
                                       && item.Digest == instance.recordModel.Digest) {
                                       return index;
                                   }
                               }
                               return null;
                           }

                           if (params.sender == "add" || params.sender == "update") {
                               instance.removeFromNotSavedRecords();
                               if (instance.recordState == $scope.recordState.creating) {
                                   instance.removeFromNewRecords();
                               }
                               var resultValue = (params.sender == "update") ? params.Result : params.Result[0];
                               if (resultValue) {

                                   if (params.sender == "update") {
                                       savedIndex = getDnsSecRecordIndex();
                                   }
                                   instance.recordModel = angular.copy(resultValue);
                                   instance.model = advansedDnsModelService.DnsSec.viewModel(angular.copy(instance.recordModel));
                                   instance.savedModel = angular.copy(instance.model);
                                   instance.recordState = $scope.recordState.active;
                                   if (params.sender == "add") {
                                       recordsListBehavior.ncGrid.settings.actions.addNewItem(instance).then(function () {
                                           if (getDnsSecRecordIndex() == null) {
                                               $scope.pageBehavior.model.DnsSecModel.Records.push(angular.copy(resultValue));
                                               recordsListBehavior.updateActionAcsses();
                                           }
                                       });
                                   } else {
                                       $scope.pageBehavior.model.DnsSecModel.Records[savedIndex] = instance.recordModel;
                                   }
                               }
                               setTimeout(function () {
                                   instance.asyncStatus(pageHelper.AsyncStatus.Active);
                                   if (!$scope.$$phase) {
                                       $scope.$apply();
                                   }
                               }, notificationService.notificationTimeLine.success);
                           } else if (params.sender == "doNotNeedUpdate") {
                               instance.recordState = $scope.recordState.active;
                               setTimeout(function () {
                                   instance.asyncStatus(pageHelper.AsyncStatus.Active);
                                   if (!$scope.$$phase) {
                                       $scope.$apply();
                                   }
                               }, notificationService.notificationTimeLine.success);

                           } else if (params.sender == "remove") {
                               instance.removeFromNotSavedRecords();
                               savedIndex = getDnsSecRecordIndex();
                               recordsListBehavior.ncGrid.settings.actions.removeItem(instance).then(function () {
                                   $scope.pageBehavior.model.DnsSecModel.Records.splice(savedIndex, 1);
                                   recordsListBehavior.updateActionAcsses();
                               });
                           }
                           recordsListBehavior.updateActionAcsses();
                       },
                       onActive: function (params) { },
                       onLoading: function (params) { },
                       onError: function (params) {
                           var instance = this.instance;
                           instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                               hasClose: true,
                               isAutoHide: true
                           });
                           setTimeout(function () {
                               instance.asyncStatus(pageHelper.AsyncStatus.Active);
                               if (!$scope.$$phase) {
                                   $scope.$apply();
                               }

                           }, notificationService.notificationTimeLine.error);
                       }
                   });
	    }

	    //#endregion

	}]);
app.controller('domainsdnsCtrl', ['$scope', '$rootScope', 'httpRepository', '$filter', '$modal', 'notificationService', 'pageHelper', '$q', 'ncGridParams', '$sce', 'ncGridEventNames', '$location',
function ($scope, $rootScope, httpRepository, $filter, $modal, notificationService, pageHelper, $q, ncGridParams, $sce, ncGridEventNames, $location) {

    $scope.HostCount = 0;
    $scope.pageHelper = pageHelper;//for call helpers methods from view
    $scope.pageNotification = new notificationService.instance();
    $scope.struckNotification = new notificationService.instance();
    $scope.isNameCheapDomain = true;
    $scope.AddHostRecordsModelOpened = false;
    $scope.DomainDnsInfoValidation = DomainDnsInfoRes;
    $scope.UrlSplits = $location.absUrl().split('/');
    $scope.domainName = $scope.UrlSplits[$scope.UrlSplits.length - 2];
    $scope.pageFrom = $scope.UrlSplits[$scope.UrlSplits.length - 1];
    if ($scope.UrlSplits[$scope.UrlSplits.length - 1] == "") {
        $scope.domainName = $scope.UrlSplits[$scope.UrlSplits.length - 3]
        $scope.pageFrom = $scope.UrlSplits[$scope.UrlSplits.length - 2]
    }

    $scope.NoSearchOption = { minimumResultsForSearch: -1 };
    //$scope.domainName = $("input[type='hidden']#domainName").val();
    //var domainName = $location.absUrl().split('/').pop();
    var domainName = $scope.domainName != undefined ? $scope.domainName : "";

    $scope.isSubDomain = false;

    var IndexofDot = domainName.indexOf(".");
    var Tld = domainName.substr(IndexofDot + 1);
    $scope.tld = Tld.toUpperCase();
    $scope.SharedHosting = "1";
    $scope.NCDefault = "1";
    $scope.removeStatus = "1";
    $scope.hostRecordLimit = "150";
    $scope.eMailFwdHostId = 0;
    $scope.mailSettings = [{ name: 'Automatic', value: '1799' }, { name: '1 minute', value: '60' }, { name: '5 minute', value: '300' }, { name: '20 minute', value: '1200' }, { name: '30 minute', value: '1800' }, { name: '60 minute', value: '3600' }];
    //$scope.timeToLiveList = [{ name: 'Automatic', value: '1799' }, { name: '1 minute', value: '60' }, { name: '5 minute', value: '300' }, { name: '20 minute', value: '1200' }, { name: '30 minute', value: '1800' }, { name: '60 minute', value: '3600' }];
    $scope.AtRecordAddress = '';
    $scope.MXRecords = [{
        HostId: '',
        Address: '',
        FriendlyName: '',
        MXPref: '',
        TTL: '',
        Name: ''

    }];
    //  $scope.checkboxSelection = '2';
    $scope.initialize = function (DomainDnsModel) {

    }
   
    $scope.CustomNameServerShow = false;
    $scope.nameServerCustomValue = "";
    $scope.NamserverDropDownChange = function (NameServerType) {     
        if (NameServerType == "custom") {
            $scope.CustomNameServerShow = true;            
        }
        else {
            $scope.CustomNameServerShow = false;
            $scope.nameServerCustomValue = "";           
            //$("input[type='text']#nameServerCustomText").html();
        }
    }
    $scope.personalDnsServerType = "";
    $scope.findPersonalDnsServerType = function ()
    {
        $scope.personalDnsServerType =   $("#ddlNameservers").val();

    }


    $scope.subDomainsListObj = [];
    $scope.subDomainsList = [];

    $rootScope.closeLightbox = function () {
        if ($scope.pageFrom == 'advancedns')
            $scope.AdvanceDnsOverView();
        else
            window.location.href = '/Domains/DomainControlPanel/' + $scope.domainName + '/domain/';
    }

    $scope.AdvanceDnsOverView = function () {
        window.location.href = '/Domains/DomainControlPanel/' + domainName + '/advancedns';
    }

    $scope.EdidNameServerInit = function () {
        $scope.EdidNameServer = new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                $scope.pageNotification.alerts.clear();
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Please wait.', true);

                httpRepository.domainDns.getNameServers(domainName).then(function (result) {
                    if (!result.Error) {
                        $scope.DefaultDNS = result.Result.DefaultDNS;
                        $scope.IsFreeDNS = result.Result.DNSType == "0" ? true : false;
                        $scope.ShardHosting = result.Result.SharedHosting;
                        $scope.BackUp = result.Result.BackUp;
                        $scope.Custom = result.Result.Custom;
                        $scope.checkboxSelection = result.Result.DNSType == "0" ? "1" : result.Result.DNSType;
                        $scope.hostRecordLimit = result.Result.DNSType == "2" ? "144" : $scope.hostRecordLimit;
                        $scope.providerType = result.Result.ProviderType;
                        instance.asyncStatus(pageHelper.AsyncStatus.Success, result);

                    }
                    else {
                        // $('div.site-msg.has-close.error.alert').show();
                        $('#errorEditNameServer').show();
                        $scope.errormessage = result.Msg;
                        instance.asyncStatus(pageHelper.AsyncStatus.Error, result);;
                    }
                });
            },
            onSuccess: function () {
                var instance = this.instance;
                $scope.pageNotification.alerts.clear();
            },
            onError: function () {
                var instance = this.instance;
                $scope.pageNotification.alerts.clear();
            }
        });
    };


    $scope.SaveNameServer = function () {

        var EditDomainDNS = {
            NameServers: '',
            DNSType: ''
        }
        var isFormValid = false;
        //Do validate if custom NameServer
        if ($scope.checkboxSelection == '4') {
            var requiredNameServerCount = 0;
            $("#EdidNameServerfrm input[type='text']").each(function () {

                if (this.value != '') {
                    requiredNameServerCount = parseInt(requiredNameServerCount) + 1;
                };

            });
        }
        //Remove required msg when enter two nameservers other then ns1 and ns2 textboxes
        $scope.nsrequired = requiredNameServerCount > 1 ? false : true;
        //var isFormValid = $scope.Nameserver1 != undefined && $scope.Nameserver2 != undefined && $scope.checkboxSelection == '4' ? true : false;;
        if (requiredNameServerCount > 1 || $scope.checkboxSelection != '4') {
            var dnsType = $("#EdidNameServerfrm input[type='radio']:checked").val();
            EditDomainDNS.DNSType = dnsType;

            var nameServers = '';
            if (dnsType == '1') {
                EditDomainDNS.NameServers = $scope.DefaultDNS.toString();
                EditDomainDNS.DNSType = 'NCDefault';
            }
            else if (dnsType == '2') {
                EditDomainDNS.NameServers = $scope.BackUp.toString();
                EditDomainDNS.DNSType = 'NCBackup';
            }
            else if (dnsType == '3') {
                EditDomainDNS.NameServers = $scope.ShardHosting.toString();
                EditDomainDNS.DNSType = 'SharedHosting';
            }
            else if (dnsType == '4') {
                EditDomainDNS.DNSType = 'Custom';
                $("#EdidNameServerfrm input[type='text']").each(function () {

                    if (this.value != '') {
                        EditDomainDNS.NameServers += this.value + ',';
                    };

                });

            }

					/*
            $scope.SetHostervers = new pageHelper.AsyncStateBehavior({
                constructor: function () {
                    var instance = this.instance;

                    instance.activeNotification = new notificationService.instance();
                    instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Please wait.', false);
                    httpRepository.domainDns.setNameServers(EditDomainDNS, domainName).then(function (result) {

                        if (result.Error) {

                            instance.asyncStatus(pageHelper.AsyncStatus.Error, result.Msg);
                        }
                        else {
                            instance.asyncStatus(pageHelper.AsyncStatus.Success, result);
                        }


                    });

                },
                //onLoading: function () {
                //    var instance = this.instance;
                //    $scope.pageNotification.alerts.clear();
                //    instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Please wait.', false);
                //    instance.isDisabled = true;
                //    instance.showError = false;
                //},
                onSuccess: function (params) {
                    if ($scope.pageFrom == 'advancedns')
                        $scope.AdvanceDnsOverView();
                    else
                        window.location.href = '/Domains/DomainControlPanel/' + $scope.domainName + '/domain/';
                },
                onError: function (msg) {
                    var instance = this.instance;
                    $scope.pageNotification.stuckNotifications.addError(msg, {
                        hasClose: true,
                        isAutoHide: true
                    });
                }
            });
					*/


        }

    }

    $scope.DynamicDNSDetails = function (DomainDnsModel) {
        var instance = this.instance;
        $scope.Resource = DomainDnsModel.Resources;
        $scope.DynamicDNS = new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Please wait.', true);
                httpRepository.domainDns.getDynamicRecords(domainName).then(function (result) {

                    if (!result.Error) {
                        $scope.ddnsPassword = result.Result.DDNSPassword;
                        $scope.PasswordLastResetDate = result.Result.PasswordLastResetDate;
                        $scope.ddnsHostRecords = result.Result.HostInfo;
                        $scope.clientSoftware = result.Result.SystemRequirements[0];
                        $scope.sytemRequirements = result.Result.SystemRequirements[1].split('/n');
                        $scope.downLoadurl = result.Result.SystemRequirements[2];
                        $scope.DDNSRecordList = result.Result;
                        instance.asyncStatus(pageHelper.AsyncStatus.Success, result);
                    }


                    else {
                        // $('div.site-msg.has-close.error.alert').show();
                        $('#errorDisplayDynamiciDNS').show();
                        $scope.errormessage = result.Msg;
                        instance.asyncStatus(pageHelper.AsyncStatus.Error, result);

                    }

                });
            },
            onSuccess: function () {
                var instance = this.instance;
                $scope.pageNotification.alerts.clear();
            },
            onError: function () {
                var instance = this.instance;
                $scope.pageNotification.alerts.clear();
            }
        });


    };

    $scope.IsResetPasswordPopUpOpened = false;
    $scope.ResetPasswordPopUp = function (referenceId) {

        // var instance = this.instance;
        if (!$scope.IsResetPasswordPopUpOpened) {
            var activeModalInstance = $modal.open({
                templateUrl: "/Common/PromptRemove",
                controller: 'promptRemoveModalCtrl',
                size: 'lg',
                resolve: {
                    modalTitle: function () {

                        return $scope.Resource.ResetDDNSPasswordTitle;

                    },
                    modalContent: function () {

                        return $scope.Resource.ResetDDNSPasswordContent;
                    }
                }
            });
            activeModalInstance.result.then(function (msg) {
                $scope.IsResetPasswordPopUpOpened = false;
                if (msg == 'yes') {

                    $scope.DDNSResetPassword();
                }
                else
                    $scope.pageAction.Click(referenceId, 'remove', false, subject);

                //when user click 
            }
            , function () {
                $scope.IsResetPasswordPopUpOpened = false;
                // any result
                activeModalInstance = null;
            });
            activeModalInstance.opened.then(function (msg) {
                $scope.IsResetPasswordPopUpOpened = true;
            });
        }

    }
    $scope.DDNSResetPassword = function () {

        $scope.resetDnsPasswordPopup = new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;

                instance.activeNotification = new notificationService.instance();

                //instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Please wait.',{

                //    hasClose: true,
                //    isAutoHide: true
                //});
                var loadingMessage = '';
                instance.asyncStatus(pageHelper.AsyncStatus.Loading, loadingMessage);
                httpRepository.domainDns.resetDnsPassword(domainName).then(function (result) {
                    if (result.Error) {

                        //  $('#errorDisplayDynamiciDNS').show();
                        //$scope.errormessage = result.Msg;
                        instance.asyncStatus(pageHelper.AsyncStatus.Error, result);
                    }
                    else {
                        instance.asyncStatus(pageHelper.AsyncStatus.Success, result);
                    }
                    //instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.Resource.ResetPasswordSuccess, {
                    //    hasClose: true,
                    //    isAutoHide: true
                    //});


                });
                //   $scope.ddnsPassword = result.Msg;


            },
            onLoading: function () {
                var instance = this.instance;
                $scope.pageNotification.alerts.clear();
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Please wait.', false);
                instance.isDisabled = true;
                instance.showError = false;
            },
            onSuccess: function (params) {
                $scope.ddnsPassword = params.Msg;
                var instance = this.instance;
                $scope.pageNotification.alerts.clear();
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess($scope.Resource.ResetPasswordSuccess, {
                    hasClose: true,
                    isAutoHide: true
                });
            },
            onError: function (params) {
                $('#errorDisplayDynamiciDNS').hide();
                var instance = this.instance;
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }

        });
    }

    $scope.IsRemoveAHostRecordOpened = false;

    $scope.RemoveAHostRecord = function (hostId, recordType, hostName) {
        var removeStatus = '';
        $scope.RemoveAtRecord = new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;

                instance.activeNotification = new notificationService.instance();
                $scope.HostId = hostId;
                $scope.group = "0";
                if (!$scope.IsRemoveAHostRecordOpened) {
                    var modalInstance = $modal.open({
                        templateUrl: "/Domains/dns/RemoveHostModel/",
                        controller: 'removeHostRecordctrl',
                        size: 'lg',
                        backdrop: 'static',
                        resolve: {
                            RecordId: function () {
                                return hostId;
                            },
                            RecordType: function () {
                                return recordType;
                            }
                        }
                    });
                    modalInstance.result.then(function (result) {
                        $scope.IsRemoveAHostRecordOpened = false;
                        if (result != '') {
                            removeStatus = result.RemoveStatus;
                            instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Please wait.', false);
                            httpRepository.domainDns.RemoveARecord(result.RemoveStatus, result.HostId, domainName, result.RecordType).then(function (result) {

                                if (!result.Error) {

                                    // $scope.ddnsHostRecords = result.Result.HostInfo;
                                    instance.asyncStatus(pageHelper.AsyncStatus.Success, result);

                                }
                                else {
                                    //$('div.site-msg.has-close.error.alert').show();
                                    //$scope.errormessage = result.Msg;
                                    instance.asyncStatus(pageHelper.AsyncStatus.Error, result.Msg);
                                }

                            });
                        }
                    });
                    modalInstance.opened.then(function (result) {
                        $scope.IsRemoveAHostRecordOpened = true;

                    });
                }



            },
            onSuccess: function (params) {
                var instance = this.instance;
                $scope.ddnsHostRecords = params.Result.HostInfo;
                $scope.pageNotification.alerts.clear();
                var successMessage = removeStatus == 'Remove' ? $scope.Resource.RemoveARecordSuccess : $scope.Resource.DisableARecordSuccess.replace('{0}', hostName);
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(successMessage, {
                    hasClose: true,
                    isAutoHide: true
                });

            },
            onError: function (msg) {
                var instance = this.instance;
                instance.showLoadPanel = false;
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }

        });
    }
    //$scope.ConfirmRemoveHostRecord = function (hostId) {
    //    var df = $scope.HostId;

    //    var removeStatus = $scope.removeStatus

    //    httpRepository.domainDns.RemoveARecord(removeStatus, $scope.HostId);
    //}



    $scope.loadHostRecords = function () {
        $scope.loadHostRecordsErrorStatus = false;
        $scope.pageBehavior = new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                instance.model = null;

                instance.pageNgGridSettings = new ncGridParams();
                instance.pageNgGridSettings.parameters.search.serchPropertyNames = ['RecordType', 'MXPref', 'HostName', 'FriendlyName', 'Address', 'Weight', 'IsActive'];

                instance.pageNgGridSettings.settings.getData = function ($defer, ncGridState) {
                    httpRepository.domainDns.getHostRecordList(ncGridState, domainName).then(function (result) {
                        instance.showLoadPanel = true;
                        instance.showContent = false;
                        var dataLength = 0;
                        if (result.Result != null && result.Result.Data != null) {
                            if (result.Msg != '') {
                                instance.activeNotification = $scope.pageNotification.stuckNotifications.addSuccess(result.Msg, {
                                    hasClose: true,
                                    isAutoHide: true
                                });
                            }
                            dataLength = result.Result.Data.length;
                            $scope.manageDnsType = result.Result.DnsServerType;
                            $scope.HostCount = dataLength;
                            for (var i = 0; i < dataLength; i++) {
                                result.Result.Data[i].chbId = "chbId" + i;
                            }
                            instance.pageNgGridSettings.parameters.mapping.isLazyLoading = instance.pageNgGridSettings.parameters.mapping.serverChunkSize <= result.Result.Data.length;
                            $defer.resolve(result.Result);
                            instance.model = instance.pageNgGridSettings.parameters.storage.requestData;



                            instance.showLoadPanel = false;
                            instance.showContent = true;

                        }
                        else {
                            instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(result.Msg, {
                                hasClose: true,
                                isAutoHide: true
                            });
                            $scope.loadHostRecordsErrorStatus = result.Error;
                        }


                    });
                }

                instance.pageNgGridSettings.settings.reload();

                httpRepository.domainDns.loadHostCount(domainName).then(function (result1) {
                    $scope.hostRecordLimit = result1.hostCount;
                });

                instance.recordList =
                    [
                 { header: "A", propertyname: "RecordType", propertyvalue: "A" },
                 { header: "AAAA", propertyname: "RecordType", propertyvalue: "AAAA" },
                 { header: "CNAME", propertyname: "RecordType", propertyvalue: "CNAME" },
                   { header: "NS", propertyname: "RecordType", propertyvalue: "NS" },
                   { header: "MX", propertyname: "RecordType", propertyvalue: "MX" },
                   { header: "SRV", propertyname: "RecordType", propertyvalue: "SRV" },
                   { header: "TXT", propertyname: "RecordType", propertyvalue: "TXT" },
                   { header: "URL Redirect", propertyname: "RecordType", propertyvalue: "URL Redirect" }
                    ];

                instance.statusList =
                    [
                 { header: "ON", propertyname: "IsActive", propertyvalue: true },
                 { header: "OFF", propertyname: "IsActive", propertyvalue: false }
                    ];


                instance.asyncStatus(pageHelper.AsyncStatus.Success);
            },
            onSuccess: function (params) {
                var instance = this.instance;
                //instance.model = $scope.AssignCssClassForFields(params.Result.Data);
                instance.asyncStatus(pageHelper.AsyncStatus.Active);
                $scope.EdidNameServerInit();


            },
            onActive: function (params) {
                var instance = this.instance;
                instance.showLoadPanel = false;
                instance.showContent = true;

            },
            onLoading: function (params) {
                var instance = this.instance;
            },
            onLocked: function (params) {
                var instance = this.instance;
            },
            onError: function (params) {
                var instance = this.instance;
                instance.showLoadPanel = false;
                instance.activeNotification = $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
        });




    }
    //$scope.LockedRecordContent = DomainDnsInfoRes;

    //---------------------------------Single Record' Actions-------------------------------------
    // Set(Turn On Or Off) the Host Record through Toggle Button(Single Record)

    $scope.IsRemoveHostRecordsOpened = false;
    $scope.setHostStatus = function (hostList, obj, funCallFrom) {
        if (hostList != null && hostList != undefined) {
            var hostId = hostList.HostId;
            var isActive = hostList.IsActive;
            var recordType = hostList.RecordType;
            var paramForLockedRecord = hostList.AssociatedAppTitle
            var isMetaTagSet = hostList.IsMetaTagSet;
            var isUsedForDDNS = hostList.IsUsedForDDNS;
        }

        if (funCallFrom == 'activeStatus') {
            $scope.TurningOnOrOffHostRecords = new pageHelper.AsyncStateBehavior(
            {
                constructor: function () {
                    var instance = this.instance;
                    //var domainName = $scope.domainName;
                    if (isActive == false) {
                        if (paramForLockedRecord == "FWD") {
                            if (!$scope.IsRemoveHostRecordsOpened) {
                                var activeModalInstance = $modal.open({
                                    templateUrl: "/Domains/Dns/RemoveHostRecords/",
                                    controller: 'promptRemoveModalCtrl',
                                    size: 'lg',
                                    resolve: {
                                        modalTitle: function () {
                                            return "Turn off Locked Record";

                                        },
                                        modalContent: function () {
                                            return "Turning off this record may result in a non-proper service operation which has been assosiated with this. Would you still want to proceed further?"

                                        }
                                    }
                                });
                                activeModalInstance.result.then(function (msg) {
                                    $scope.IsRemoveHostRecordsOpened = false;
                                    if (msg == 'yes') {
                                        $("#" + hostId).parents('tr').addClass("async-processing");
                                        new pageHelper.AsyncStateBehavior(
                                        {
                                            constructor: function () {
                                                var instance = this.instance;
                                                //var domainName = $scope.domainName;
                                                httpRepository.domainDns.turningOnOrOffHostRecords(hostId, isActive, domainName).then(function (result) {
                                                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);

                                                });
                                            },
                                            onSuccess: function (params) {
                                                $("#" + hostId).parents('tr').removeClass("async-processing");
                                            },
                                            onError: function (params) {

                                                $scope.pageNotification.stuckNotifications.addError("It is not posssible to turn off the host record", {
                                                    hasClose: true,
                                                    isAutoHide: true
                                                });
                                                $("#" + hostId).parents('tr').removeClass("async-processing");
                                                hostList.IsActive = !hostList.IsActive;
                                                
                                            }
                                        });
                                    }
                                    else
                                        $scope.pageAction.Click(referenceId, 'remove', false, subject);
                                },
                                function (reason) {
                                    $scope.IsRemoveHostRecordsOpened = false;
                                    if (reason == 'cancel') {
                                        $('#' + obj.target.id).prop("checked", true);
                                    }
                                    $("#" + hostId).parents('tr').removeClass("async-processing");
                                    activeModalInstance = null;
                                });

                                activeModalInstance.opened.then(function () {
                                    $scope.IsRemoveHostRecordsOpened = true;
                                });
                            }


                        }
                        if (recordType == "URL Redirect") {
                            if (!$scope.IsRemoveHostRecordsOpened)
                            {
                                var activeModalInstance = $modal.open({
                                    templateUrl: "/Domains/Dns/RemoveHostRecords/",
                                    controller: 'promptRemoveModalCtrl',
                                    size: 'lg',
                                    resolve: {
                                        modalTitle: function () {
                                            return "Turn off Locked Record";
                                        },
                                        modalContent: function () {
                                            if (isMetaTagSet && isUsedForDDNS)
                                                return "URL redirect,META Tags set up,Dynamic DNS" + " " + "services have been assosiated with this record. Turning off this record may result in a non-proper service operation. Would you still want to proceed further?"
                                                //return "We need to Obtain the customer's confirmation tat editing a locked record may result in a non-proper service operation and specify the name of the service";
                                            else if (!isMetaTagSet && !isUsedForDDNS)
                                                return "URL redirect" + " " + "service has been assosiated with this record. Turning off this record may result in a non-proper service operation. Would you still want to proceed further?"
                                            if (isMetaTagSet && !isUsedForDDNS)
                                                return "URL redirect,META Tags set up" + " " + "services have been assosiated with this record. Turning off this record may result in a non-proper service operation. Would you still want to proceed further?"
                                            else if (!isMetaTagSet && isUsedForDDNS)

                                                return "URL redirect,Dynamic DNS" + " " + "services have been assosiated with this record. Turning off this record may result in a non-proper service operation. Would you still want to proceed further?"

                                        }
                                    }
                                });
                                activeModalInstance.result.then(function (msg) {
                                    $scope.IsRemoveHostRecordsOpened = false;
                                    if (msg == 'yes') {
                                        $("#" + hostId).parents('tr').addClass("async-processing");
                                        new pageHelper.AsyncStateBehavior(
                                        {
                                            constructor: function () {
                                                var instance = this.instance;
                                                //var domainName = $scope.domainName;
                                                httpRepository.domainDns.turningOnOrOffHostRecords(hostId, isActive, domainName).then(function (result) {
                                                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);

                                                });
                                            },
                                            onSuccess: function (params) {
                                                $("#" + hostId).parents('tr').removeClass("async-processing");
                                            },
                                            onError: function (params) {
                                                $scope.pageNotification.stuckNotifications.addError("It is not posssible to turn off the host record", {
                                                    hasClose: true,
                                                    isAutoHide: true
                                                });
                                                $("#" + hostId).parents('tr').removeClass("async-processing");
                                                hostList.IsActive = !hostList.IsActive;

                                            }
                                        });
                                    }
                                    else {

                                        $scope.pageAction.Click(referenceId, 'remove', false, subject);

                                    }
                                }, function (reason) {
                                    $scope.IsRemoveHostRecordsOpened = false;
                                    if (reason == 'cancel') {
                                        $('#' + obj.target.id).prop("checked", true);
                                    }
                                    $("#" + hostId).parents('tr').removeClass("async-processing");
                                    activeModalInstance = null;
                                });
                                activeModalInstance.opened.then(function () {
                                    $scope.IsRemoveHostRecordsOpened = true;
                                });
    
                            }


                        }
                        else if (recordType == "MX") {
                            if (!$scope.IsRemoveHostRecordsOpened)
                            {
                                var activeModalInstance = $modal.open({
                                    templateUrl: "/Domains/Dns/RemoveHostRecords/",
                                    controller: 'promptRemoveModalCtrl',
                                    size: 'lg',
                                    resolve: {
                                        modalTitle: function () {
                                            return "Turn off Locked Record";

                                        },
                                        modalContent: function () {
                                            return "Turning off this record may result in a non-proper service operation which has been assosiated with this. Would you still want to proceed further?"

                                        }
                                    }
                                });
                                activeModalInstance.result.then(function (msg) {
                                    $scope.IsRemoveHostRecordsOpened = false;
                                    if (msg == 'yes') {
                                        $("#" + hostId).parents('tr').addClass("async-processing");
                                        new pageHelper.AsyncStateBehavior(
                                        {
                                            constructor: function () {
                                                var instance = this.instance;
                                                //var domainName = $scope.domainName;
                                                httpRepository.domainDns.turningOnOrOffHostRecords(hostId, isActive, domainName).then(function (result) {
                                                    instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);

                                                });
                                            },
                                            onSuccess: function (params) {
                                                $("#" + hostId).parents('tr').removeClass("async-processing");
                                            },
                                            onError: function (params) {
                                                $scope.pageNotification.stuckNotifications.addError("It is not posssible to turn off the host record", {
                                                    hasClose: true,
                                                    isAutoHide: true
                                                });
                                                $("#" + hostId).parents('tr').removeClass("async-processing");
                                                hostList.IsActive = !hostList.IsActive;
                                            }
                                        });
                                    }
                                    else {

                                        $scope.pageAction.Click(referenceId, 'remove', false, subject);
                                    }
                                }, function (reason) {

                                    if (reason == 'cancel') {
                                        $scope.IsRemoveHostRecordsOpened = false;
                                        $('#' + obj.target.id).prop("checked", true);
                                    }
                                    $("#" + hostId).parents('tr').removeClass("async-processing");
                                    activeModalInstance = null;
                                });

                                activeModalInstance.opened.then(function () {
                                    $scope.IsRemoveHostRecordsOpened = true;
                                });
                            }

                        }
                        else if (recordType != "URL Redirect") {
                            if (recordType != "MX") {
                                if (paramForLockedRecord != "FWD") {
                                    $("#" + hostId).parents('tr').addClass("async-processing");
                                    new pageHelper.AsyncStateBehavior(
                                 {
                                     constructor: function () {
                                         var instance = this.instance;
                                         //var domainName = $scope.domainName;
                                         httpRepository.domainDns.turningOnOrOffHostRecords(hostId, isActive, domainName).then(function (result) {
                                             instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);

                                         });
                                     },
                                     onSuccess: function (params) {
                                         $("#" + hostId).parents('tr').removeClass("async-processing");
                                     },
                                     onError: function (params) {

                                         $scope.pageNotification.stuckNotifications.addError("It is not posssible to turn off the host record", {
                                             hasClose: true,
                                             isAutoHide: true
                                         });

                                         $("#" + hostId).parents('tr').removeClass("async-processing");

                                         // $scope.model = { IsActive : false };
                                         //$scope.IsActive = true;

                                        hostList.IsActive = !hostList.IsActive;
                                    }
                                 });
                                }
                            }
                        }
                    }
                    else {
                        $("#" + hostId).parents('tr').addClass("async-processing");
                        httpRepository.domainDns.turningOnOrOffHostRecords(hostId, isActive, domainName).then(function (result) {
                            instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);

                        });
                    }
                },
                onSuccess: function (params) {

                    $("#" + hostId).parents('tr').removeClass("async-processing");
                },
                onError: function (params) {


                    $scope.pageNotification.stuckNotifications.addError("It is not posssible to turn on the host record", {
                        hasClose: true,
                        isAutoHide: true
                    });
                    $("#" + hostId).parents('tr').removeClass("async-processing"); // switch should b same state
                    hostList.IsActive = !hostList.IsActive;

                }
            });
        }
        else if (funCallFrom == 'editStatus') {
            if (recordType == "URL Redirect" || paramForLockedRecord == "FWD" || isUsedForDDNS) {

                if (!$scope.IsRemoveHostRecordsOpened)
                {
                    var activeModalInstance = $modal.open({
                        templateUrl: "/Domains/Dns/RemoveHostRecords/",
                        controller: 'promptRemoveModalCtrl',
                        size: 'lg',
                        resolve: {
                            modalTitle: function () {
                                return "Edit Locked Record";

                            },
                            modalContent: function () {
                                return "We need to obtain customers confirmation that editing a locked record may result in a non-proper service operation and specify the name of the service."
                            }
                        }
                    });
                    activeModalInstance.result.then(function (msg) {
                        $scope.IsRemoveHostRecordsOpened = false;
                        if (msg == 'yes') {
                            $scope.AddRecords('edit', hostId, recordType, $scope.manageDnsType, 'hosts');
                        }
                        else {
                            $scope.pageAction.Click(referenceId, 'remove', false, subject);
                        }
                    }, function (reason) {
                        if (reason == 'cancel') {
                            $scope.IsRemoveHostRecordsOpened = false;
                            $('#' + obj.target.id).prop("checked", true);
                        }
                    });
                    activeModalInstance.opened.then(function () {
                        $scope.IsRemoveHostRecordsOpened = true;
                    });
                    activeModalInstance.closed.then(function () {
                        $scope.IsRemoveHostRecordsOpened = false;
                    });
                }
        

            }
            else {
                $scope.AddRecords('edit', hostId, recordType, $scope.manageDnsType, 'hosts');
            }
        }
    }

    // Remove(Romoving the Host Records through Toggle Button(Single Record))
    $scope.removeHost = function (hostId, recordType) {
        if (!$scope.IsRemoveHostRecordsOpened)
        {
            var activeModalInstance = $modal.open({
                templateUrl: "/Domains/Dns/RemoveHostRecords/",
                controller: 'promptRemoveModalCtrl',
                size: 'lg',
                resolve: {
                    modalTitle: function () {
                        switch (recordType) {
                            case ("URL Redirect"):
                                {
                                    return "Remove Locked Record";
                                }
                                break;
                            case ("MX"):
                                {
                                    return "Remove Locked Record";
                                }
                                break;
                            default:
                                return "Remove Record";
                        }

                    },
                    modalContent: function () {


                        switch (recordType) {
                            case ("URL Redirect"):
                                {
                                    return "We need to obtain customer's confirmation that the host records will be removed, and the services that may depend on them may stop funtioning properly. List the name of the services that would be affected";
                                }
                                break;
                            case ("MX"):
                                {
                                    return "We need to obtain customer's confirmation that the host records will be removed, and the services that may depend on them may stop funtioning properly. List the name of the services that would be affected";
                                }
                                break;
                            default:
                                return "We need to obtain customer's confirmation that the host records will be removed, and the services that may depend on them may stop funtioning properly";
                        }

                    }
                }
            });
            activeModalInstance.result.then(function (msg) {
                $scope.IsRemoveHostRecordsOpened = false;
                if (msg == 'yes') {
                    $("#" + hostId).parents('tr').addClass("async-processing");
                    new pageHelper.AsyncStateBehavior(
                    {
                        constructor: function () {
                            var instance = this.instance;
                            //var domainName = $scope.domainName;
                            httpRepository.domainDns.removeHostRecord(hostId, recordType, domainName).then(function (result) {
                                instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                            });
                        },
                        onSuccess: function (params) {
                            $("#" + hostId).parents('tr').removeClass("async-processing");
                            $("#" + hostId).parents('tr').hide();
                            $scope.pageNotification.stuckNotifications.addSuccess("The record(s) was/were Successfully Removed", {
                                hasClose: true,
                                isAutoHide: true
                            });
                            //$scope.loadHostRecords();
                            window.location.href = "/domains/dns/managehostrecords/" + domainName + "/advancedns";
                        },
                        onError: function (params) {
                            $("#" + hostId).parents('tr').removeClass("async-processing");
                            $scope.pageNotification.stuckNotifications.addError("The record(s) was/were not Removed", {
                                hasClose: true,
                                isAutoHide: true
                            });
                        }
                    });
                }
                else {
                    $scope.pageAction.Click(referenceId, 'remove', false, subject);
                }

            }, function () {
                $scope.IsRemoveHostRecordsOpened = false;
                $("#" + hostId).parents('tr').removeClass("async-processing");
                activeModalInstance = null;
            });

            activeModalInstance.opened.then(function () {
                $scope.IsRemoveHostRecordsOpened = true;
            });
        }
        //var domainName = $scope.domainName;
       
    }
    //------------------------------------------------------------------------------------------------------

    //---------------------------------Bulk Record' Actions-------------------------------------

    // Set(Turn On) Host Records through "Action DDL"(Bulk Record)
    $scope.turningOnHostRecords = function () {
        var data = $scope.pageBehavior.pageNgGridSettings.parameters.selection.selectedItems;
        //var domainName = $scope.domainName;
        var hostId = "";
        for (i = 0; i < data.length; i++) {
            olyHostId = data[i].HostId;
            hostId = hostId + data[i].HostId;
            // data[i].IsActive = true;
            if (i > 1 || i < data.length - 1)
                hostId = hostId + ",";
            $("#" + olyHostId).parents('tr').addClass("async-processing");
        }
        new pageHelper.AsyncStateBehavior(
          {
              constructor: function () {
                  var instance = this.instance;
                  //var domainName = $scope.domainName;
                  httpRepository.domainDns.turningOnOrOffHostRecords(hostId, "True", domainName).then(function (result) {
                      instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                  });
              },
              onSuccess: function (params) {
                  for (i = 0; i < data.length; i++) {
                      olyHostId = data[i].HostId;
                      data[i].IsActive = true;
                      //$("#" + data[i].HostId).parents('tr').removeClass("async-processing");
                      $("#" + olyHostId).parents('tr').removeClass("async-processing");

                      //Collpasing the bulk-action dropdown
                      $('div.dropdown.has-icon.icon-actions.bulk-actions.ng-scope').removeClass('expanded');

                  }
              },
              onError: function (params) {

                  $scope.pageNotification.stuckNotifications.addError("It is not posssible to turn on the host record", {
                      hasClose: true,
                      isAutoHide: true
                  });
                  for (i = 0; i < data.length; i++) {
                      olyHostId = data[i].HostId;
                      data[i].IsActive = data[i].IsActive;
                      $("#" + olyHostId).parents('tr').removeClass("async-processing");
                  }
              }
          });
    }
    $scope.pageNotification = new notificationService.instance();
    $scope.SuccessMessageOnSameViewClick = function () {

        $scope.pageNotification.alerts.addSuccess("This is a test success message on same view.", $scope.sslnotificationAlertArguments)
        $scope.pageNotification.stuckNotifications.addSuccess("This is a test success message on same view.", {
            hasClose: true,
            isAutoHide: true
        });
    }
    //   var lockedRecords = false;
    // Set(Turn Off) Host Records through "Action DDL"(Bulk Record)
    $scope.turningOffHostRecords = function () {
        var data = $scope.pageBehavior.pageNgGridSettings.parameters.selection.selectedItems;
        var hostId = "";

        for (i = 0; i < data.length; i++) {
            hostId = hostId + data[i].HostId;
            if (i > 1 || i < data.length - 1)
                hostId = hostId + ",";

            if (data[i].RecordType == "URL Redirect" || data[i].RecordType == "MX" || data[i].AssociatedAppTitle == "FWD")
                var lockedRecords = true;


        }
        if (lockedRecords) {
            if (!$scope.IsRemoveHostRecordsOpened)
            {
                var activeModalInstance = $modal.open({
                    templateUrl: "/Domains/Dns/RemoveHostRecords/",
                    controller: 'promptRemoveModalCtrl',
                    size: 'lg',
                    resolve: {
                        modalTitle: function () {
                            return "Turn off Locked Record";
                        },
                        modalContent: function () {
                            return "We need to Obtain the customer's confirmation tat editing a locked record may result in a non-proper service operation and specify the name of the service";
                        }
                    }
                });

                activeModalInstance.result.then(function (msg) {
                    $scope.IsRemoveHostRecordsOpened = false;
                    if (msg == 'yes') {
                        for (i = 0; i < data.length; i++) {
                            olyHostId = data[i].HostId;
                            $("#" + olyHostId).parents('tr').addClass("async-processing");
                        }
                        new pageHelper.AsyncStateBehavior(
                       {
                           constructor: function () {
                               var instance = this.instance;
                               var domainName = $scope.domainName;
                               httpRepository.domainDns.turningOnOrOffHostRecords(hostId, "False", domainName).then(function (result) {
                                   instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);

                               });
                           },
                           onSuccess: function (params) {

                               // $scope.pageNotification.stuckNotifications.addSuccess("The record(s) was/were Successfully Removed", {
                               //    hasClose: true,
                               //    isAutoHide: true
                               //});
                               for (i = 0; i < data.length; i++) {
                                   data[i].IsActive = false;
                                   olyHostId = data[i].HostId;
                                   $("#" + olyHostId).parents('tr').removeClass("async-processing");
                               }
                               //Collpasing the bulk-action dropdown
                               $('div.dropdown.has-icon.icon-actions.bulk-actions.ng-scope').removeClass('expanded');
                               // window.location.href = "/domains/dns/managehostrecords/" + domainName + "/advancedns";
                           },
                           onError: function (params) {
                               $scope.pageNotification.stuckNotifications.addError("It is not posssible to turn off the host record", {
                                   hasClose: true,
                                   isAutoHide: true
                               });

                               for (i = 0; i < data.length; i++) {
                                   olyHostId = data[i].HostId;
                                   data[i].IsActive = data[i].IsActive;
                                   $("#" + olyHostId).parents('tr').removeClass("async-processing");
                               }
                           }
                       });
                    }
                    else
                        $scope.pageAction.Click(referenceId, 'remove', false, subject);
                }, function () {
                    $scope.IsRemoveHostRecordsOpened = false;
                    for (i = 0; i < data.length; i++) {
                        olyHostId = data[i].HostId;
                        $("#" + olyHostId).parents('tr').removeClass("async-processing");
                    }
                    activeModalInstance = null;
                });

                activeModalInstance.opened.then(function () {
                    $scope.IsRemoveHostRecordsOpened = true;
                });
            }
           
        }
        else {
            for (i = 0; i < data.length; i++) {
                olyHostId = data[i].HostId;
                $("#" + olyHostId).parents('tr').addClass("async-processing");
            }
            new pageHelper.AsyncStateBehavior(
            {
                constructor: function () {
                    var instance = this.instance;
                    //var domainName = $scope.domainName;
                    httpRepository.domainDns.turningOnOrOffHostRecords(hostId, "False", domainName).then(function (result) {
                        instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);

                    });
                },
                onSuccess: function (params) {
                    for (i = 0; i < data.length; i++) {
                        data[i].IsActive = false;
                        olyHostId = data[i].HostId;
                        $("#" + olyHostId).parents('tr').removeClass("async-processing");
                    }
                    //Collpasing the bulk-action dropdown
                    $('div.dropdown.has-icon.icon-actions.bulk-actions.ng-scope').removeClass('expanded');
                    //  window.location.href = "/domains/dns/managehostrecords/" + domainName + "/advancedns";
                },
                onError: function (params) {
                    $scope.pageNotification.stuckNotifications.addError("It is not posssible to turn off the host record", {
                        hasClose: true,
                        isAutoHide: true
                    });
                    for (i = 0; i < data.length; i++) {
                        data[i].IsActive = data[i].IsActive;
                        olyHostId = data[i].HostId;
                        $("#" + olyHostId).parents('tr').removeClass("async-processing");
                    }
                }
            });
        }

    }

    $scope.DDNSTurnOn = function () {


        $scope.DDNSEnable = new pageHelper.AsyncStateBehavior({

            constructor: function () {
                var instance = this.instance;
                httpRepository.domainDns.turnOnDns(domainName).then(function (result) {
                    if (!result.Error) {
                        window.location.href = '/Domains/Dns/DynamicDNS/' + domainName + '/advancedns';
                    }
                    else {
                        instance.asyncStatus(pageHelper.AsyncStatus.Error, result);
                    }

                });
            },
            onError: function (params) {
                $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }

        });

    }
    $scope.IsDynamicDNSTurnOffModalPopUpOpened = false;
    //Delete Marketplace Listing Call popup
    $scope.openDynamicDNSTurnOffModalPopUp = function (nameServer, domain, actionToPerform) {
        var isBulkAction = false;
        if (!$scope.IsDynamicDNSTurnOffModalPopUpOpened)
        {
            var activeModalInstance = $modal.open({
                templateUrl: "/Domains/SSL/Common/PromptRemove",
                controller: 'promptRemoveModalCtrl',
                size: 'lg',
                resolve: {
                    modalTitle: function () {
                        return $scope.DomainDnsInfoValidation.static_DynamicDNSTurnOffTitle;
                    },
                    modalContent: function () {
                        return $scope.DomainDnsInfoValidation.static_DynamicDNSTurnOffIntro;

                    }
                }
            });
            activeModalInstance.result.then(function (msg) {
                $scope.IsDynamicDNSTurnOffModalPopUpOpened = false;
                if (msg == 'yes') {

                    if (actionToPerform.toLowerCase() == 'ddnsturnoff') {
                        new pageHelper.AsyncStateBehavior(
                  {
                      constructor: function () {
                          var instance = this.instance;
                          //var domainName = $scope.domainName;
                          httpRepository.domainDns.turnOffDns(domainName).then(function (result) {
                              instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                          });
                      },
                      onSuccess: function (params) {

                          if (params.Result == true) {
                              $scope.pageNotification.stuckNotifications.addSuccess($scope.DomainDnsInfoValidation.static_DynamicDNSTurnOffSuccessMessage, {
                                  hasClose: true,
                                  isAutoHide: true
                              });
                              //Calls Getinfo to load advanced dns details
                              $scope.AdvanceDnsOverView();
                          }
                      },
                      onError: function (params) {
                          $scope.pageNotification.stuckNotifications.addError(params.Msg, {
                              hasClose: true,
                              isAutoHide: true
                          });
                      }
                  });
                    }
                }
                //when user click 
            }, function () {
                $scope.IsDynamicDNSTurnOffModalPopUpOpened == false;
                // any result
                activeModalInstance = null;
            });
            activeModalInstance.opened.then(function () {
                $scope.IsDynamicDNSTurnOffModalPopUpOpened = true;
            });
        }

    }

    // Remove(Romoving Host Records through "Action DDL"(Bulk Record))
    $scope.removeAllHostRecords = function (Id) {

        var data = $scope.pageBehavior.pageNgGridSettings.parameters.selection.selectedItems;
        //var domainName = $scope.domainName;
        var hostId = "";
        var recordType = "";
        for (i = 0; i < data.length; i++) {
            hostId = hostId + data[i].HostId;
            recordType = recordType + data[i].RecordType;
            if (i > 1 || i < data.length - 1)
                hostId = hostId + ",";
            recordType = recordType + ",";
        }
        if (!$scope.IsRemoveHostRecordsOpened)
        {
            var activeModalInstance = $modal.open({
                templateUrl: "/Domains/Dns/RemoveHostRecords/",
                controller: 'promptRemoveModalCtrl',
                size: 'lg',
                resolve: {
                    modalTitle: function () {

                        for (i = 0; i < data.length; i++) {
                            recordType = data[i].RecordType;
                            switch (data[i].RecordType) {
                                case ("URL Redirect"):
                                    {
                                        return "Remove Locked Record";
                                    }
                                    break;
                                case ("MX"):
                                    {
                                        return "Remove Locked Record";
                                    }
                                    break;
                                default:
                                    return "Remove Record";
                            }
                        }
                    },
                    modalContent: function () {

                        for (i = 0; i < data.length; i++) {
                            recordType = data[i].RecordType;
                            switch (data[i].RecordType) {
                                case ("URL Redirect"):
                                    {
                                        return "We need to obtain customer's confirmation that the host records will be removed, and the services that may depend on them may stop funtioning properly. List the name of the services that would be affected";
                                    }
                                    break;
                                case ("MX"):
                                    {
                                        return "We need to obtain customer's confirmation that the host records will be removed, and the services that may depend on them may stop funtioning properly. List the name of the services that would be affected";
                                    }
                                    break;
                                default:
                                    return "We need to obtain customer's confirmation that the host records will be removed, and the services that may depend on them may stop funtioning properly";
                            }
                        }
                    }
                }
            });
            activeModalInstance.result.then(function (msg) {
                $scope.IsRemoveHostRecordsOpened = false;
                if (msg == 'yes') {
                    for (i = 0; i < data.length; i++) {
                        olyHostId = data[i].HostId;
                        $("#" + olyHostId).parents('tr').addClass("async-processing");
                    }
                    new pageHelper.AsyncStateBehavior(
                  {
                      constructor: function () {
                          var instance = this.instance;
                          //var domainName = $scope.domainName;
                          httpRepository.domainDns.removeHostRecord(hostId, recordType, domainName).then(function (result) {
                              instance.asyncStatus((result.Error == false) ? pageHelper.AsyncStatus.Success : pageHelper.AsyncStatus.Error, result);
                          });
                      },
                      onSuccess: function (params) {
                          for (i = 0; i < data.length; i++) {
                              data[i].IsActive = false;
                              olyHostId = data[i].HostId;
                              $("#" + olyHostId).parents('tr').hide();
                          }

                          $scope.pageNotification.stuckNotifications.addSuccess("The record(s) was/were Successfully Removed", {
                              hasClose: true,
                              isAutoHide: true
                          });
                          //$scope.loadHostRecords();
                          //Collpasing the bulk-action dropdown
                          $('div.dropdown.has-icon.icon-actions.bulk-actions.ng-scope').removeClass('expanded');
                          window.location.href = "/domains/dns/managehostrecords/" + domainName + "/advancedns";
                      },
                      onError: function (params) {
                          $scope.pageNotification.stuckNotifications.addError("The record(s) was/were not Removed", {
                              hasClose: true,
                              isAutoHide: true
                          });
                          for (i = 0; i < data.length; i++) {
                              data[i].IsActive = false;
                              olyHostId = data[i].HostId;
                              $("#" + olyHostId).parents('tr').removeClass("async-processing");
                          }
                      }
                  });
                }
                else {
                    $scope.pageAction.Click(referenceId, 'remove', false, subject);
                }
                //when user click 
            }, function () {
                // any result
                $scope.IsRemoveHostRecordsOpened = false;
                for (i = 0; i < data.length; i++) {
                    olyHostId = data[i].HostId;
                    $("#" + olyHostId).parents('tr').removeClass("async-processing");
                }
                activeModalInstance = null;
            });
            activeModalInstance.opened.then(function () {
                $scope.IsRemoveHostRecordsOpened = false;
            });
        }

        
        //Remove the SelectedRecords Rocords from the List Page
    }

    //Add and Edit Host Records model window for Advanced Dns
    $scope.AddRecords = function (pageType, hostID, recordType, pageModelClass, editCapabilitytype) {

        var openModelParameter = pageType;
        var pageModelClass = pageModelClass;
        httpRepository.domainDetails.IsManagerHasRightsToPerformThisAction($scope.domainName, editCapabilitytype).then(function (result) {
            if (result) {
                // pageModelClass.Address = $scope.AtRecordAddress == '' ? pageModelClass.Address : $scope.AtRecordAddress;
                if (!$scope.AddHostRecordsModelOpened) {
                    var modalInstance = $modal.open({
                        templateUrl: "/Domains/Dns/AdvancedDNSAddRecordsModel/",
                        controller: 'addDnsRecords',
                        size: 'lg',
                        backdrop: 'static',
                        resolve: {
                            openModelParameter: function () {
                                if (pageType != null) {
                                    return $scope.pageTypeParam = pageType;
                                }
                                else {
                                    return $scope.pageTypeParam = 'addNew';
                                }
                            },
                            domainName: function () {
                                if (pageType = 'addRedirect') {
                                    $scope.UrlSplits = $location.absUrl().split('/');
                                    $scope.domainName = $scope.UrlSplits[$scope.UrlSplits.length - 2];
                                    $scope.pageFrom = $scope.UrlSplits[$scope.UrlSplits.length - 1];
                                    if ($scope.UrlSplits[$scope.UrlSplits.length - 1] == "") {
                                        $scope.domainName = $scope.UrlSplits[$scope.UrlSplits.length - 3]
                                        $scope.pageFrom = $scope.UrlSplits[$scope.UrlSplits.length - 2]
                                    }
                                    return $scope.domainName;
                                }
                                else {
                                    return $scope.domainName;
                                }

                            },
                            hostingID: function () {
                                if (hostID != null) {
                                    return $scope.hostRecordID = hostID;
                                }
                                else { return $scope.hostRecordID = 0; }

                            },
                            hostRecordType: function () {
                                if (hostID != null) {
                                    return $scope.editHostRecordType = recordType;
                                }
                                else { return $scope.editHostRecordType = ''; }
                            },
                            pageModelClass: function () {
                                if (pageModelClass != '' && pageModelClass != null) {
                                    return pageModelClass;
                                }
                                else {
                                    return pageModelClass = 0;
                                }
                            },
                            domainType: function () {
                                return $scope.isSubDomain;
                            }
                        }
                    });

                    modalInstance.result.then(function (model) {
                        $scope.AddHostRecordsModelOpened = false;
                        if (model != null) {
                            if ((openModelParameter == 'AddDDNS' || openModelParameter == "EditDDNS") && model.isCancel == false) {
                                new pageHelper.AsyncStateBehavior(
                           {
                               constructor: function () {
                                   var instance = this.instance;
                                   instance.activeNotification = $scope.pageNotification.stuckNotifications.addLoading('Please wait.', true);
                                   httpRepository.domainDns.getDynamicRecords(domainName, true).then(function (result) {

                                       if (!result.Error) {

                                           $scope.ddnsHostRecords = result.Result.HostInfo;
                                           instance.asyncStatus(pageHelper.AsyncStatus.Success, result);
                                           // var instance = this.instance;

                                       }

                                       else {
                                           // var instance = this.instance;

                                           $('div.site-msg.has-close.error.alert').show();
                                           $scope.errormessage = result.Msg;
                                           instance.asyncStatus(pageHelper.AsyncStatus.Error, result);

                                       }

                                   });
                               },
                               onSuccess: function () {
                                   $scope.pageNotification.alerts.clear();
                               },
                               onError: function () {
                                   $scope.pageNotification.alerts.clear();
                               }
                           });
                            }
                            else if (openModelParameter == 'addNew') {
                                //$scope.loadHostRecords();
                                $scope.LoadAdvancedDNSView();
                            }
                            else if (openModelParameter == 'edit') {
                                //$scope.loadHostRecords();                    
                                window.location.href = "/domains/dns/managehostrecords/" + domainName + "/" + $scope.pageFrom;
                            }
                            else if (openModelParameter == 'manageAddNew') {

                                window.location.href = "/domains/dns/managehostrecords/" + domainName + "/" + $scope.pageFrom;
                            }
                            else if (openModelParameter == 'addRedirect' || openModelParameter == 'editRedirect') {
                                if (!model.isCancel) {
                                    window.location.href = "/domains/domaincontrolpanel/" + domainName + "/domain";
                                }
                            }
                            else if (openModelParameter == 'addEmailSetting' || openModelParameter == 'editEmailSetting') {
                                $scope.AtRecordAddress = model.value;
                                httpRepository.domainDns.getEmailForwardingDefaultList('', domainName).then(function (result) {
                                    $scope.eMailFwdHostId = result.Result.Data[0].HostId;
                                });

                            }


                        }
                    });
                    modalInstance.opened.then(function () {
                        $scope.AddHostRecordsModelOpened = true;
                    });
                }

            }

        });

    }


    $scope.LoadAdvancedDNSView = function () {


        $scope.pageDNSOverViewBehavior = new pageHelper.AsyncStateBehavior({
            constructor: function () {
                var instance = this.instance;
                instance.model = null;
                httpRepository.domainDns.getDomainAdvancedDNSDetails($scope.domainName).then(function (result) {
                    instance.showLoadPanel = true;
                    instance.showContent = false;
                    if (result.Error == false && result.Result != null) {
                        instance.model = result.Result;
                        if (result.Msg != '') {
                            $scope.pageNotification.stuckNotifications.addSuccess(result.Msg, {
                                hasClose: true,
                                isAutoHide: true
                            });
                        }
                        instance.asyncStatus(pageHelper.AsyncStatus.Active);

                        if (result.Result.DNSDetails.SubDomainsCSV != undefined && result.Result.DNSDetails.SubDomainsCSV != null) {
                            var subDomainArray = result.Result.DNSDetails.SubDomainsCSV.split(',');
                            if (subDomainArray.length > 0) {
                                var i = 0;
                                for (i = 0; i < subDomainArray.length; i++) {
                                    $scope.sbDomainObject = {};
                                    $scope.sbDomainObject.name = subDomainArray[i];
                                    $scope.sbDomainObject.value = subDomainArray[i];
                                    $scope.subDomainsListObj.push($scope.sbDomainObject);
                                }
                                $scope.subDomainsList = $scope.subDomainsListObj;
                                $scope.dnsdetails = { Subdomains: domainName };
                                $scope.isSubDomain = true;
                            }
                        }
                    } else {

                        if (result.Result != undefined && result.Result != null && result.Result.Domainname == null && result.Result.Status == "false") {
                            $scope.isNameCheapDomain = false;
                        }
                        else {
                            instance.asyncStatus(pageHelper.AsyncStatus.Error, result);
                        }
                    }
                });
            },
            onSuccess: function (params) {
                var instance = this.instance;
                //instance.model = $scope.AssignCssClassForFields(params.Result.Data);
                instance.asyncStatus(pageHelper.AsyncStatus.Active);


            },
            onActive: function (params) {
                var instance = this.instance;
                instance.showLoadPanel = false;
                instance.showContent = true;

            },
            onLoading: function (params) {
                var instance = this.instance;
            },
            onLocked: function (params) {
                var instance = this.instance;
            },
            onError: function (params) {
                var instance = this.instance;
                instance.showLoadPanel = false;
                instance.activeNotification = $scope.struckNotification.stuckNotifications.addError(params.Msg, {
                    hasClose: true,
                    isAutoHide: true
                });
            }
        });
    }
