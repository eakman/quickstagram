app.factory('sslRepository', ['httpService', function (httpService) {
    var sslFunctionVariable =
        {
       
            getSSLInfoSectionModelJSON: function (sslInfoSectionModel, requiredFor) {
                var postValue = {};

                postValue.UserName = sslInfoSectionModel.UserName;
                postValue.Message = sslInfoSectionModel.Message
                postValue.ProviderName = sslInfoSectionModel.ProviderName
                postValue.Status = sslInfoSectionModel.Status
                postValue.CertificateId = sslInfoSectionModel.CertificateId
                postValue.CertificateType = sslInfoSectionModel.CertificateType
                postValue.CSR = sslInfoSectionModel.CSR
                postValue.APIParameterValue = sslInfoSectionModel.APIParameterValue
                postValue.ProviderChannel = sslInfoSectionModel.ProviderChannel
                postValue.OverRideProductName = sslInfoSectionModel.OverRideProductName
                postValue.MinYears = sslInfoSectionModel.MinYears
                postValue.MaxYears = sslInfoSectionModel.MaxYears
                postValue.IsDCVStepRequired = sslInfoSectionModel.IsDCVStepRequired
                postValue.ValidationType = sslInfoSectionModel.ValidationType
                postValue.IsDCVStepReadOnly = sslInfoSectionModel.IsDCVStepReadOnly
                postValue.ExpirationDateTime = sslInfoSectionModel.ExpirationDateTime
                postValue.IssuedDateTime = sslInfoSectionModel.IssuedDateTime
                postValue.Webserver = sslInfoSectionModel.Webserver
                postValue.ApproverEmail = sslInfoSectionModel.PrimaryDomainDetail.ValidationValue
                postValue.IsReseller = sslInfoSectionModel.IsReseller
                postValue.IsRenewalOrder = sslInfoSectionModel.IsRenewalOrder
                postValue.SSlType = sslInfoSectionModel.SSlType
                postValue.IsWildCard = sslInfoSectionModel.IsWildCard
                postValue.OrderId = sslInfoSectionModel.OrderId
                postValue.Years = sslInfoSectionModel.Years
                postValue.DnsNames = sslInfoSectionModel.DnsNames
                postValue.IsSan = sslInfoSectionModel.IsSan
                postValue.SanCount = sslInfoSectionModel.SanCount
                postValue.DnsApproverEmails = sslInfoSectionModel.DnsApproverEmails;
                postValue.IsSanActivationWithSubDomainsOnly = sslInfoSectionModel.IsSanActivationWithSubDomainsOnly;
                postValue.IsSanReissueEditWithSubDomainOnly = sslInfoSectionModel.IsSanReissueEditWithSubDomainOnly;
                postValue.IsSanReissueRemoveAllowed = sslInfoSectionModel.IsSanReissueRemoveAllowed;
                if (requiredFor == 'VALIDATECSR')
                {
                    postValue.PrimaryDomainDetail = {};
                    postValue.PrimaryDomainDetail.CommonName = sslInfoSectionModel.PrimaryDomainDetail.CommonName;
                    postValue.PrimaryDomainDetail.DomainName = sslInfoSectionModel.PrimaryDomainDetail.DomainName;
                    postValue.PrimaryDomainDetail.ValidationType = sslInfoSectionModel.PrimaryDomainDetail.ValidationType;
                    postValue.PrimaryDomainDetail.ValidationValue = sslInfoSectionModel.PrimaryDomainDetail.ValidationValue;
                }
                if (requiredFor != 'VALIDATECSR')
                {
                    if (sslInfoSectionModel.SanDomainsDetail != null && sslInfoSectionModel.SanDomainsDetail != undefined && sslInfoSectionModel.IsSan) {
                        postValue.IsHttpDCVUsed = sslInfoSectionModel.IsHttpDCVUsed
                        postValue.IsDNSDCVUsed = sslInfoSectionModel.IsDNSDCVUsed
                    }
                    else {

                        postValue.IsHttpDCVUsed = sslInfoSectionModel.PrimaryDomainDetail.IsHttpDCVUsed
                        postValue.IsDNSDCVUsed = sslInfoSectionModel.PrimaryDomainDetail.IsDNSDCVUsed
                    }



                    if (sslInfoSectionModel.AdminContactDetails != null) {
                        var adminContactDetails = {};
                        adminContactDetails = sslInfoSectionModel.AdminContactDetails;
                        postValue.AdminContactDetails = adminContactDetails;
                    }
                    if (sslInfoSectionModel.TechContactDetails != null) {
                        var techContactDetails = {};
                        techContactDetails = sslInfoSectionModel.TechContactDetails;
                        postValue.TechContactDetails = techContactDetails;
                    }

                    var companycontactdetails = {};
                    companycontactdetails = sslInfoSectionModel.CompanyContactDetails;
                    postValue.CompanyContactDetails = companycontactdetails;

                    if (sslInfoSectionModel.IsCallbackContactDetailsRequired) {
                        var callbackContactDetails = {};
                        callbackContactDetails = sslInfoSectionModel.CallbackContactDetails;
                        postValue.CallbackContactDetails = callbackContactDetails;

                    }
                }




                return postValue;
            },
            getDNSNames: function (sslInfoSectionModel) {
                var dnsNames = '';
                var dnsApproverEmails = '';
                if (sslInfoSectionModel.SanDomainsDetail != null && sslInfoSectionModel.SanDomainsDetail != undefined) {
                    for (var i = 0; i < sslInfoSectionModel.SanDomainsDetail.length; i++) {
                        if (sslInfoSectionModel.SanDomainsDetail[i] != null) {
                            if (dnsNames == '') {
                                dnsNames = sslInfoSectionModel.SanDomainsDetail[i].CommonName;

                            }
                            else {
                                if (sslInfoSectionModel.SanDomainsDetail[i].CommonName != '')
                                    dnsNames = dnsNames + ',' + sslInfoSectionModel.SanDomainsDetail[i].CommonName;

                            }
                            if (dnsApproverEmails == '')
                            {
                                if (sslInfoSectionModel.SanDomainsDetail[i].ValidationValue != '' && sslInfoSectionModel.SanDomainsDetail[i].ValidationValue != null && sslInfoSectionModel.SanDomainsDetail[i].ValidationValue != undefined)
                                    dnsApproverEmails = sslInfoSectionModel.SanDomainsDetail[i].ValidationValue;
                            }
                            else {
                                if (sslInfoSectionModel.SanDomainsDetail[i].ValidationValue != '' && sslInfoSectionModel.SanDomainsDetail[i].ValidationValue != null && sslInfoSectionModel.SanDomainsDetail[i].ValidationValue != undefined)
                                    dnsApproverEmails = dnsApproverEmails + ',' + sslInfoSectionModel.SanDomainsDetail[i].ValidationValue;
                            }
                        }


                    }
                }
                return [dnsNames, dnsApproverEmails];
            },
            ParseCsr: function (csr, certificateType, httpDCValidation, dnsDCValidation) {
                return httpService.Post('/Domains/SSL/ParseCsr', { csr: csr, certificateType: certificateType, httpDCValidation: httpDCValidation, dnsDCValidation: dnsDCValidation })

            },

            GetCountryName: function (countrycode) {
                return httpService.Post('/Domains/SSL/GetCountryName', { countryCode: countrycode })

            },
            GetApproverEmailList: function (domainname, certificatetype, index) {
                return httpService.Post('/Domains/SSL/GetApproverEmailList', { domainName: domainname, certificateType: certificatetype, sanIndex: index })

            },
            ValidateCsr: function (sslInfoSectionModel)
            {

                var sslInfoSectionModelJson = this.getSSLInfoSectionModelJSON(sslInfoSectionModel, 'VALIDATECSR');
                var dnsReturnValues = this.getDNSNames(sslInfoSectionModel);
                sslInfoSectionModelJson.DnsNames = dnsReturnValues[0];
                return httpService.Post('/Domains/SSL/ValidateCSR', { model: sslInfoSectionModelJson })

            },
            ActivateCertificate: function (sslInfoSectionModel) {

                var sslInfoSectionModelJson = this.getSSLInfoSectionModelJSON(sslInfoSectionModel, 'ACTIVATION');
                if (sslInfoSectionModel.IsDCVStepRequired)
                {
                    var dnsReturnValues = this.getDNSNames(sslInfoSectionModel);
                    var dnsNames = dnsReturnValues[0];
                    var dnsApproverEmails = dnsReturnValues[1];
                    sslInfoSectionModelJson.DnsNames = dnsNames;
                    sslInfoSectionModelJson.DnsApproverEmails = dnsApproverEmails;
                }
                return httpService.Post('/Domains/SSL/Confirmation', sslInfoSectionModelJson)

            },
            GetNamecheapPrimaryContactDetails: function () {
                return httpService.Post('/Domains/SSL/GetNamecheapPrimaryContactDetails', {})
            },
            GetAddressInformation: function () {
                return httpService.Post('/Domains/SSL/GetAddressInformation', {})
            },
            RedirectProductPageJSON: function (certificateid,successMsg) {
                return httpService.Get('/Domains/SSL/RedirectProductPageJSON/' + certificateid, { successMessage: successMsg })
            },
            ChangeDCVMethodError: function (certificateid,errorMsg) {
                return httpService.Get('/Domains/SSL/ChangeDCVMethodError/' + certificateid + '/', { errorMsg: errorMsg })
            },
            ChangeDCVMethod: function (model) {
                var certId = parseInt(model.CertificateId)
                var dnsReturnValues = this.getDNSNames(model);
                var dnsNames = dnsReturnValues[0];
                var dnsDCVMethods = dnsReturnValues[1];
                if (dnsNames != '' && dnsNames != undefined && dnsDCVMethods != '' && dnsDCVMethods != undefined)
                {
                    dnsNames = model.PrimaryDomainDetail.CommonName + ',' + dnsNames;
                    dnsDCVMethods = model.PrimaryDomainDetail.ValidationValue + ',' + dnsDCVMethods;
                }
                else
                {
                    dnsNames = model.PrimaryDomainDetail.CommonName;
                    dnsDCVMethods = model.PrimaryDomainDetail.ValidationValue;

                }
                return httpService.Post('/Domains/SSL/ChangeDCVMethod/Confirmation/', { certificateId: certId,dnsNames: dnsNames, dnsDCVMethods: dnsDCVMethods })
            },
            ValidateDCVStep: function (model) {
                var jsonObject = JSON.stringify(model)
                var jsonSanDetails = JSON.stringify(model.SanDomainsDetail);
                return httpService.Post('/Domains/SSL/ValidateDcvStep/', { model: JSON.parse(jsonObject), activationType: '' })
            },
            ProductPage: function (certificateId) {
                return httpService.Post('/Domains/SSL/ProductPage/' + certificateId)
            },
            ValidateDomainInfo: function (domainName) {
                return httpService.Post('/Domains/SSL/ValidateDomainInfo', { domainName: domainName })
            },
            GetEquivalentComodoCertificateDetails: function (certType, year, sanCount) {
                return httpService.Get('/Domains/SSL/GetEquivalentComodoCertificateDetails/', { certificateType: certType, year: year, sanCount: sanCount })
            },
            ReplaceEquivalentComodoCertificateForSymantec: function (comodoCertType, year, symantecCertId, sansToAdd) {
                return httpService.Post('/Domains/SSL/ReplaceEquivalentComodoCertificateForSymantec/', { comodoCertType: comodoCertType, year: year, symantecCertificateId: symantecCertId, noOfSans: sansToAdd})
            },
            GetRefundForSymantecCertificate: function (symantecCertificateId) {
                return httpService.Post('/Domains/SSL/GetRefundForSymantecCertificate/', { symantecCertificateId : symantecCertificateId })
            }
        }
    return {
        sslInfo: sslFunctionVariable
    }
}]);
;
app.factory('$templateCache', ['$cacheFactory', '$http', '$injector', '$q', function ($cacheFactory, $http, $injector, $q) {
	var cache = $cacheFactory('templates');
	/*{promise:[object],url:[string]} */
	var allTplPromises = [];
	var findPromise = function (url) {
		for (var i = 0; i < allTplPromises.length; i++) {
			if (allTplPromises[i].url == url) {
				return allTplPromises[i];
			}
		}
		return null;
	}

	return {
		remove: function (url) {
			var tmpPromise = findPromise(url);
			if (tmpPromise != null) {
				allTplPromises.slice(allTplPromises.indexOf(tmpPromise), 1);
			}
			cache.remove(url);
		},
		get: function (url, allTemplatesUrl) {
			var fromCache = cache.get(url);
			// already have required template in the cache
			if (fromCache) {
				return fromCache;
			}
			var usedUrl = (allTemplatesUrl == null) ? url : allTemplatesUrl;
			var tmpPromise = findPromise(usedUrl);
			if (tmpPromise == null) {
				tmpPromise = {};
				tmpPromise.promise = $http.get(usedUrl).then(function (response) {
					// compile the response, which will put stuff into the cache
					$injector.get('$compile')(response.data);
					return response;
				});
				tmpPromise.url = usedUrl;
				allTplPromises.push(tmpPromise);
			}
			return tmpPromise.promise.then(function (response) {
				return {
					status: response.status,
					fromCache: cache.get(url),
					data: response.data,
					statusText: response.statusText,
					headers: response.headers
				};
			});
		},

		put: function (key, value) {
			cache.put(key, value);
		}
	};

}]);

;
app.service('tooltipService', [
	'ncTooltipSettings',
	'$timeout',
	'$compile',
	function (ncTooltipSettings, $timeout, $compile) {
	    return {
	        renderOnDemand: function (tooltipElm, scope, elm) {
	            var tooltipElement = elm.closest('div.responsive-tooltip');
	            tooltipElement.mouseenter(initTooltip);

	            function initTooltip() {
	                if (tooltipElement.find('[rel]').attr('rendered')) {
	                    return;
	                }

	                tooltipElement.responsiveTooltip(ncTooltipSettings);
	                setTimeout(showTooltip);
	            }

	            function showTooltip() {
	                var attVal = tooltipElement.find('[rel]').attr('rel');
	                if (!attVal) {
	                    return;
	                }

	                var showedTooltipElement = angular.element(document.getElementById(attVal.replace("toggle", 'tip')));
	                if (showedTooltipElement) {
	                    scope.$evalAsync(function () {
	                        // TODO: there is a huge memory leak through user actions mouseenter -> mouse leave
	                        // because each usage of crappy responsive tooltip leaves a lot of handlers (local and global) which will not be cleaned up
	                        showedTooltipElement.empty().append(tooltipElm);
	                        $compile(showedTooltipElement)(scope);
	                        tooltipElement.find('[rel]').attr('rendered', true);
	                        tooltipElement.children('.tooltip-toggle').trigger('mouseover');
	                    });
	                }
	            }
	        }
	    }
	}
]);
;
app.service('urlConfiguration', function () {
    var conf = this;

	angular.extend(conf, {
		batchAddToCardUrl: '',
		cmsSiteUrl: ''
	});

    conf.configureUrls = function (urls) {
        for (var key in urls) {
            if (urls.hasOwnProperty(key)) {
                if (conf[key] == null) {
                    console.warn('urlConfiguration does not contain key "' + key + '"');
                }

                conf[key] = urls[key];
            }
        }
    }
});;
app.factory('dspAutoRenewService', ['$modal', function ($modal) {
	return function (sender, action, isDomainStatus, isWhoisGuardStatus, isPremiumDNSStatus, domainName, is3dPartyDomain) {
        function extendClass(Child, Parent) {
            var F = function () { };
            F.prototype = Parent.prototype;
            var f = new F();

            for (var prop in Child.prototype) f[prop] = Child.prototype[prop];
            Child.prototype = f;
            Child.prototype.super = Parent.prototype;
        }
        var bahaviorClasses = {
            baseClass:function() {},
            OffDomain: function () {
	            this.domainAction(false);
            },
            OffDomainWhoisGuardPremiumDNS: function () {
                var self = this;
	            this.modalContent = "Youre about to turn off auto-renewal for your domain. Please note that this action will also disable auto-renewal for WhoisGuard and PremiumDNS services associated with the domain. Would you like to proceed?";
                this.resolveOkModalAction = function () {
                    self.domainAction(false).then(function (domainActionComplite) {
                        if (domainActionComplite) {
	                        self.whoisGuardAction(false);
	                        self.premiumDNSAction(false);
                        }
                    })
                }

                this.showModalWindow();
            },

            OffDomainWhoisGuard: function () {
                var self = this;
                this.modalContent = "Youre about to turn off auto-renewal for your domain. Please note that this action will also disable auto-renewal for WhoisGuard service associated with the domain. Would you like to proceed?";
                this.resolveOkModalAction = function () {
                    self.domainAction(false).then(function (domainActionComplite) {
                        if (domainActionComplite) {
	                        self.whoisGuardAction(false);
                        }
                    })
                }
                this.showModalWindow();
            },

            OffDomainPremiumDNS: function () {
                var self = this;
                this.modalContent = "Youre about to turn off auto-renewal for your domain. Please note that this action will also disable auto-renewal for PremiumDNS service associated with the domain. Would you like to proceed?";
                this.resolveOkModalAction = function () {
                    self.domainAction(false).then(function (domainActionComplite) {
                        if (domainActionComplite) {
                            self.premiumDNSAction(false)
                        }
                    })
                }

                this.showModalWindow();
            },
            OffWhoisGuard : function () {
	            this.whoisGuardAction(false);
            },
            OffPremiumDNS: function () {
                this.premiumDNSAction(false);
            },

            OnDomain: function () {
	            this.domainAction(true);
            },

            OnDomainWhoisGuardPremiumDNS: function () {
                var self = this;
                this.modalContent = "You're about to turn on auto-renewal for your domain. Would you like to turn on auto-renewal for your domain's WhoisGuard and PremiumDNS services as well?";
                this.resolveOkModalAction = function () {
	                self.domainAction(true).then(function(domainActionComplite) {
		                if (domainActionComplite) {
			                self.whoisGuardAction(true);
			                self.premiumDNSAction(true);
		                }
	                });

                }
                this.resolveCancelModalAction = function () {
	                self.domainAction(true);
                }

                this.showModalWindow();
            },

            OnDomainWhoisGuard: function () {
            	var self = this;
            	if (!this.domainAutoRenewOn) {
            		this.modalContent = "You're about to turn on auto-renewal for your domain's WhoisGuard service. Please note that this action will also enable auto-renewal for your domain. Would you like to proceed? ";
	            }else
	            {
            		this.modalContent = "You're about to turn on auto-renewal for your domain. Would you like to turn on auto-renewal for your domain's WhoisGuard service as well?";
            		this.resolveCancelModalAction = function () {
            			self.domainAction(true);
            		}
	            }

              this.resolveOkModalAction = function () {
	              self.domainAction(true).then(function(domainActionComplite) {
		              if (domainActionComplite) {
			              self.whoisGuardAction(true);
		              }
	              });
              }

              this.showModalWindow();
            },

            OnDomainPremiumDNS: function () {
            	var self = this;
            	if (!this.domainAutoRenewOn) {
            		this.modalContent = "You're about to turn on auto-renewal for your domain's PremiumDNS service. Please note that this action will also enable auto-renewal for your domain. Would you like to proceed?";
            	} else {
            		this.modalContent = "You're about to turn on auto-renewal for your domain. Would you like to turn on auto-renewal for your domain's PremiumDNS service as well?";
            		this.resolveCancelModalAction = function () {
            			self.domainAction(true);
            		}
            	}

            	this.resolveOkModalAction = function () {
            		self.domainAction(true).then(function (domainActionComplite) {
            			if (domainActionComplite) {
            				self.premiumDNSAction(true);
            			}
            		});
            	}

            	if (this.is3dParty) {
            		self.premiumDNSAction(true);
            	} else {
            		this.showModalWindow();
            	}
            	
            },
           

            OnWhoisGuard: function () {
            	var self = this;
            	self.whoisGuardAction(true);
            },

            OnPremiumDNS: function () {
            	var self = this;
            	self.premiumDNSAction(true);
            },
        }

        var className = ((action) ? "On" : "Off") + ((sender != "Domain" && isDomainStatus == false) ? "Domain"+ sender:sender) +
                        ((isWhoisGuardStatus != null && isWhoisGuardStatus != action && sender != "WhoisGuard" && sender != "PremiumDNS") ?  "WhoisGuard" : "") +
                        ((isPremiumDNSStatus != null && isPremiumDNSStatus != action && sender != "PremiumDNS" && sender != "WhoisGuard") ? "PremiumDNS" : "");

	    var callbacks = {
            domain: function (action) { },
            whoisGuard: function (action) { },
            premiumDNS: function (action) { },
        }

        bahaviorClasses.baseClass.prototype = {
            constructor: bahaviorClasses.baseClass,
            modalTitle: "Turn " + ((action) ? "On" : "Off") + " " + sender + " Auto-Renewal",
            showModalWindow : function () {
                var self = this;
                var promtWindow = $modal.open({
                    templateUrl: "/Domains/PromptModalOpen",
                    controller: 'promptRemoveModalCtrl',
                    size: 'lg',
                    resolve: {
                        modalTitle: function () {return self.modalTitle;},
                        modalContent: function () { return self.modalContent; }
                    }
                });
                promtWindow.result.then(this.resolveOkModalAction, this.resolveCancelModalAction);
            },
            is3dParty:is3dPartyDomain,
            sender: sender,
            domainAutoRenewOn:isDomainStatus,
            modalContent : null,
            resolveOkModalAction : function () { },
            resolveCancelModalAction : function () { },
            domainAction: function (action) {
	            return callbacks.domain(action);
            },
            whoisGuardAction: function (action) {
	            callbacks.whoisGuard(action);
            },
            premiumDNSAction: function (action) {
	            callbacks.premiumDNS(action);
            },
        }

        return {
            callbackAction:callbacks,
            apply: function () {
                extendClass(bahaviorClasses[className], bahaviorClasses.baseClass);
                
                return new bahaviorClasses[className]();
            } 
        }
    }
   
}]);;
app.service('domainStatuses', function () {
    var domainStatuses = [
		{ name: 'Alert', icon: 'alert', orderWeight: 0 },
		{ name: 'Grace', icon: 'grace', orderWeight: 1 }
    ];

    var orderingPropertyName = '.name';

    var statusFilters = [
		{
		    header: 'Alert',
		    propertyvalue: 'Alert'
		},
		{
		    header: 'Grace',
		    propertyvalue: 'Grace'
		}
    ];

    return {
        getExpiringStatusFilterValues: function (statusPropertyName) {
            return statusFilters.map(function (status) {
                return angular.extend({
                    propertyname: statusPropertyName + orderingPropertyName
                }, status);
            });
        },

        /**
		 * Returns GUI information which can be used for rendering status badges.
		 * @param statusEnumValue {int} - serialized value of enum (DomainExpirationStatus)
		 * @returns {{name, icon, orderWeight}|*}
		 */
        getIconFromStatusEnum: function (statusEnumValue) {
            return domainStatuses[statusEnumValue];
        }
    }
});
;
app.service('expiringCounter', [
	'httpRepository',
	'$q',
	function(httpRepository, $q) {
		var cacheKey = 'expiringCounter';
		var cacheDurationInMinutes = 20;
		var millisecondsInMinute = 1000 * 60;
		var userKeyCache = 'userKey';

		return {
			update: fetchAndUpdateCounter
		};

		function fetchAndUpdateCounter() {
			return getCachedTotal()
				.then(function(cachedTotal) {
					if (cachedTotal == null) {
						return fetchAndCacheTotal();
					}

					return cachedTotal;
				})
				.then(function(expiringTotal) {
					updateMenuItem(expiringTotal);
				});
		}

		function getUserKey() {
			return sessionStorage.getItem(userKeyCache);
		}

		function fetchAndCacheTotal() {
			return httpRepository.expiringList.getExpirationsSummary()
				.then(function (response) {
					if (response.Error === true || !response.Result) {
						return $q.reject(response.Msg);
					}

					var total = response.Result.Total;
					cacheTotal(total);
					return total;
				})
		}

		function getCachedTotal() {
			var valueInCache = $.cookie(cacheKey + getUserKey());
			if (valueInCache == null || valueInCache === '') {
				return $q.when(null);
			}

			try {
				var value = JSON.parse(valueInCache);
			} catch (e) {
				return $q.when(null);
			}

			var cacheTime = value.cacheTime;
			var minutesDiff = minutesFromNow(cacheTime);
			if (minutesDiff >= cacheDurationInMinutes) {
				return $q.when(null);
			}

			return $q.when(value.total);
		}

		function minutesFromNow(unixTimestamp) {
			var now = new Date();

			var timeDiff = now.getTime() - unixTimestamp;
			return Math.ceil(timeDiff / millisecondsInMinute);
		}

		function cacheTotal(total) {
			var cacheData = JSON.stringify({ total: total, cacheTime: new Date().getTime() });
			$.cookie(cacheKey + getUserKey(), cacheData, {
				path: '/',
				domain: 'namecheap.com'
			});
		}

		function updateMenuItem(totalExpiring) {
			var expiringTitle = document.querySelector('nav li.expiring>a span');
			if (!expiringTitle || totalExpiring < 1) { // exclude precisions bugs for float
				return;
			}

			var counter = document.createElement('span');
			counter.className = 'notification';
			if (totalExpiring > 99) {
				counter.innerHTML = '99+';
				counter.setAttribute('data-quicktip-title', totalExpiring);
				$(counter).quicktip();
			} else {
				counter.innerHTML = totalExpiring.toString();
			}
			
			expiringTitle.parentNode.insertBefore(counter, expiringTitle.nextSibling);
		}
	}
]);;
app.factory('advansedDnsModelService', [
	'$timeout', '$filter', function($timeout, $filter) {
		var dnsSecAlgorithmType = [
