		}
		var recordTypes = {
			Unknown: { name: "Unknown", sortValue: 1, filterTitle: "Unknown", rowClass: "", type: "Unknown", viewTemplatePath: "", editTemplatePath: "", focusedFields: {} },
			A: { name: "A Record", sortValue: 2, filterTitle: "A", rowClass: "", type: "A", viewTemplatePath: "advancedDns_A_view", editTemplatePath: "advancedDns_A_edit", focusedFields: { host: false, idAddress: false, ttl: false, recordType: false } },
